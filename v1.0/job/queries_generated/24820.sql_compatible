
WITH ranked_movies AS (
    SELECT 
        a.title,
        a.production_year,
        k.keyword,
        ROW_NUMBER() OVER (PARTITION BY a.id ORDER BY a.production_year DESC) AS rank
    FROM 
        aka_title a
    LEFT JOIN 
        movie_keyword mk ON a.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        a.production_year IS NOT NULL
),

extended_cast AS (
    SELECT 
        ci.movie_id,
        p.name AS person_name,
        r.role AS role_type,
        COALESCE(NULLIF(p.gender, ''), 'Unknown') AS gender,
        CROSSED_ROWS.total_actors,
        CASE 
            WHEN ci.nr_order IS NULL THEN 'Order Not Specified'
            ELSE CONCAT('Order ', ci.nr_order)
        END AS order_description
    FROM 
        cast_info ci
    JOIN 
        aka_name p ON ci.person_id = p.person_id
    LEFT JOIN 
        role_type r ON ci.role_id = r.id
    LEFT JOIN 
        (SELECT movie_id, COUNT(*) AS total_actors
         FROM cast_info
         GROUP BY movie_id) AS CROSSED_ROWS ON CROSSED_ROWS.movie_id = ci.movie_id
),

movie_summary AS (
    SELECT 
        em.movie_id,
        COUNT(*) AS total_cast,
        STRING_AGG(DISTINCT em.person_name, ', ') AS cast_members,
        MAX(rm.rank) AS highest_rank,
        MAX(rm.title) AS highest_ranked_title
    FROM 
        extended_cast em
    LEFT JOIN 
        ranked_movies rm ON em.movie_id = rm.id
    GROUP BY 
        em.movie_id
)

SELECT 
    ms.movie_id,
    ms.total_cast,
    ms.cast_members,
    CASE 
        WHEN ms.total_cast IS NULL THEN 'No cast information available'
        ELSE 'Cast information exists'
    END AS cast_status,
    COUNT(mk.keyword_id) AS total_keywords,
    COALESCE(NULLIF(ms.highest_ranked_title, ''), 'No title') AS best_title
FROM 
    movie_summary ms
LEFT JOIN 
    movie_keyword mk ON ms.movie_id = mk.movie_id
GROUP BY 
    ms.movie_id, ms.total_cast, ms.cast_members, ms.highest_ranked_title
HAVING 
    COUNT(mk.keyword_id) > 5 OR ms.total_cast > 10
ORDER BY 
    ms.total_cast DESC, ms.movie_id ASC;
