
WITH RankedMovies AS (
    SELECT 
        mt.title AS movie_title,
        mt.production_year AS year,
        COUNT(cc.id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY mt.production_year ORDER BY COUNT(cc.id) DESC) AS rank
    FROM 
        aka_title mt
    LEFT JOIN 
        complete_cast cc ON mt.id = cc.movie_id
    GROUP BY 
        mt.title, mt.production_year
),
SelectedMovies AS (
    SELECT 
        rm.movie_title,
        rm.year,
        rm.cast_count
    FROM 
        RankedMovies rm
    WHERE 
        rm.rank <= 5
)
SELECT 
    sm.movie_title,
    sm.year,
    sm.cast_count,
    COALESCE(GROUP_CONCAT(DISTINCT ak.name ORDER BY ak.name), 'No Cast') AS cast_names
FROM 
    SelectedMovies sm
LEFT JOIN 
    cast_info ci ON sm.movie_title = ci.movie_id
LEFT JOIN 
    aka_name ak ON ci.person_id = ak.person_id
GROUP BY 
    sm.movie_title, sm.year, sm.cast_count
ORDER BY 
    sm.year DESC, sm.cast_count DESC;
