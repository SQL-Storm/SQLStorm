
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        RANK() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords
    FROM 
        aka_title AS t
    LEFT JOIN 
        movie_keyword AS mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword AS k ON mk.keyword_id = k.id
    GROUP BY 
        t.id, t.title, t.production_year
),
MovieCast AS (
    SELECT 
        c.movie_id,
        a.name AS actor_name,
        COUNT(DISTINCT c.person_id) AS actor_count
    FROM 
        cast_info AS c
    JOIN 
        aka_name AS a ON c.person_id = a.person_id
    WHERE 
        a.name IS NOT NULL
    GROUP BY 
        c.movie_id, a.name
),
NullableCompanies AS (
    SELECT 
        mc.movie_id,
        cn.name AS company_name,
        ct.kind AS company_type
    FROM 
        movie_companies AS mc
    LEFT JOIN 
        company_name AS cn ON mc.company_id = cn.id
    LEFT JOIN 
        company_type AS ct ON mc.company_type_id = ct.id
    WHERE 
        cn.country_code IS NULL OR ct.kind IS NULL  
),
CombinedResults AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        mc.actor_name,
        mc.actor_count,
        nc.company_name,
        nc.company_type,
        rm.keywords
    FROM 
        RankedMovies AS rm
    LEFT JOIN 
        MovieCast AS mc ON rm.movie_id = mc.movie_id
    LEFT JOIN 
        NullableCompanies AS nc ON rm.movie_id = nc.movie_id
)

SELECT 
    movie_id,
    title,
    production_year,
    actor_name,
    actor_count,
    COALESCE(company_name, 'Unknown Company') AS company_name,
    COALESCE(company_type, 'Unknown Type') AS company_type,
    keywords
FROM 
    CombinedResults
WHERE 
    actor_count > 1  
ORDER BY 
    production_year DESC, actor_count DESC
LIMIT 20

UNION ALL

SELECT
    NULL AS movie_id,
    'TOTAL ACTORS' AS title,
    NULL AS production_year,
    NULL AS actor_name,
    COUNT(DISTINCT c.person_id) AS actor_count,
    NULL AS company_name,
    NULL AS company_type,
    NULL AS keywords
FROM
    cast_info AS c
WHERE
    c.person_id IS NOT NULL;
