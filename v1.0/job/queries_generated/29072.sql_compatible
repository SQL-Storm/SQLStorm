
WITH RankedMovies AS (
    SELECT 
        t.title,
        t.production_year,
        m.name AS company_name,
        cc.role_id,
        COUNT(DISTINCT a.name) AS actor_count,
        ROW_NUMBER() OVER (PARTITION BY t.id ORDER BY COUNT(DISTINCT a.name) DESC) AS rank
    FROM 
        aka_title t
    JOIN 
        movie_companies mc ON mc.movie_id = t.id
    JOIN 
        company_name m ON m.id = mc.company_id
    JOIN 
        complete_cast cc ON cc.movie_id = t.id
    JOIN 
        cast_info ci ON ci.id = cc.subject_id
    JOIN 
        aka_name a ON a.person_id = ci.person_id
    WHERE 
        t.production_year IS NOT NULL
    GROUP BY 
        t.title, t.production_year, m.name, cc.role_id
),

TopMovies AS (
    SELECT 
        title, 
        production_year, 
        company_name
    FROM 
        RankedMovies
    WHERE 
        rank <= 5
)

SELECT 
    tm.title,
    tm.production_year,
    tm.company_name,
    ARRAY_AGG(DISTINCT a.name) AS actors,
    COUNT(DISTINCT a.person_id) AS total_actors
FROM 
    TopMovies tm
JOIN 
    complete_cast cc ON cc.movie_id = (SELECT id FROM aka_title WHERE title = tm.title AND production_year = tm.production_year)
JOIN 
    cast_info ci ON cc.subject_id = ci.id
JOIN 
    aka_name a ON a.person_id = ci.person_id
GROUP BY 
    tm.title, tm.production_year, tm.company_name
ORDER BY 
    tm.production_year DESC, total_actors DESC;
