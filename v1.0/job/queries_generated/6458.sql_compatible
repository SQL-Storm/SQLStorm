
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    c.kind AS company_type,
    k.keyword AS movie_keyword,
    mi.info AS movie_info,
    COUNT(DISTINCT ca.id) AS total_cast_members
FROM 
    aka_name a
JOIN 
    cast_info ca ON a.person_id = ca.person_id
JOIN 
    aka_title t ON ca.movie_id = t.movie_id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name c ON mc.company_id = c.id
JOIN 
    movie_keyword mk ON t.id = mk.movie_id
JOIN 
    keyword k ON mk.keyword_id = k.id
JOIN 
    movie_info mi ON t.id = mi.movie_id
WHERE 
    t.production_year > 2000
    AND c.country_code = 'USA'
    AND mi.info_type_id IN (SELECT id FROM info_type WHERE info IN ('box office', 'duration'))
GROUP BY 
    a.name, t.title, c.kind, k.keyword, mi.info, t.production_year
ORDER BY 
    total_cast_members DESC, t.production_year ASC;
