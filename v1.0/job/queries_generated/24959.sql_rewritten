WITH RankedMovies AS (
    SELECT 
        a.title, 
        a.production_year,
        ROW_NUMBER() OVER (PARTITION BY a.production_year ORDER BY COUNT(DISTINCT ca.person_id) DESC) AS rank_by_cast_size,
        COUNT(DISTINCT ca.person_id) AS total_cast
    FROM 
        aka_title a
    LEFT JOIN 
        cast_info ca ON a.id = ca.movie_id
    GROUP BY 
        a.id, a.title, a.production_year
),
TopMovies AS (
    SELECT 
        title, 
        production_year,
        total_cast
    FROM 
        RankedMovies
    WHERE 
        rank_by_cast_size <= 5
),
MovieDetails AS (
    SELECT 
        t.title, 
        t.production_year, 
        COALESCE(k.keyword, 'No keywords') AS keyword,
        COALESCE(c.name, 'Unknown Company') AS company_name,
        COALESCE(m.info, 'No additional info') AS additional_info
    FROM 
        TopMovies t
    LEFT JOIN 
        movie_keyword mk ON mk.movie_id = (SELECT id FROM aka_title WHERE title = t.title AND production_year = t.production_year LIMIT 1)
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        movie_companies mc ON mc.movie_id = (SELECT id FROM aka_title WHERE title = t.title AND production_year = t.production_year LIMIT 1)
    LEFT JOIN 
        company_name c ON mc.company_id = c.id
    LEFT JOIN 
        movie_info m ON m.movie_id = (SELECT id FROM aka_title WHERE title = t.title AND production_year = t.production_year LIMIT 1)
    WHERE 
        t.total_cast > (SELECT AVG(total_cast) FROM RankedMovies) 
)
SELECT 
    movie_title,
    production_year,
    STRING_AGG(keyword, ', ') as keywords,
    STRING_AGG(DISTINCT company_name, ', ') as companies,
    GROUP_CONCAT(DISTINCT additional_info ORDER BY additional_info) as additional_infos
FROM 
    MovieDetails
WHERE 
    EXISTS (
        SELECT 1 
        FROM movie_info mi 
        WHERE mi.movie_id = (SELECT id FROM aka_title WHERE title = MovieDetails.title AND production_year = MovieDetails.production_year LIMIT 1) 
        AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'Box Office')
    )
GROUP BY 
    movie_title, 
    production_year
ORDER BY 
    production_year DESC 
LIMIT 10;