
WITH RankedMovies AS (
    SELECT 
        a.title,
        a.production_year,
        ROW_NUMBER() OVER (PARTITION BY a.production_year ORDER BY a.production_year DESC) AS year_rank,
        COUNT(DISTINCT m.company_id) OVER (PARTITION BY a.id) AS company_count
    FROM 
        aka_title a
    LEFT JOIN 
        movie_companies m ON a.id = m.movie_id
    WHERE 
        a.production_year >= 2000
),
FilteredMovies AS (
    SELECT 
        r.title,
        r.production_year,
        r.year_rank,
        r.company_count
    FROM 
        RankedMovies r
    WHERE 
        r.year_rank <= 10
)
SELECT 
    f.title,
    f.production_year,
    COALESCE(c.name, 'Unknown') AS company_name,
    f.company_count,
    (SELECT COUNT(*) 
     FROM cast_info ci 
     WHERE ci.movie_id IN (SELECT id FROM aka_title WHERE title = f.title)
     AND ci.note IS NULL) AS null_cast_count
FROM 
    FilteredMovies f
LEFT JOIN 
    movie_companies mc ON mc.movie_id IN (SELECT id FROM aka_title WHERE title = f.title)
LEFT JOIN 
    company_name c ON mc.company_id = c.id
WHERE 
    f.company_count > 0
GROUP BY 
    f.title, 
    f.production_year, 
    c.name, 
    f.company_count
ORDER BY 
    f.production_year DESC, 
    f.title;
