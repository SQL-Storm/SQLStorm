
WITH RecursiveMovieCTE AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        m.production_year,
        COALESCE(SUM(CASE WHEN ca.note IS NOT NULL THEN 1 ELSE 0 END), 0) AS cast_count,
        COUNT(DISTINCT mk.keyword) AS keyword_count
    FROM 
        aka_title m
    LEFT JOIN 
        cast_info ca ON m.id = ca.movie_id
    LEFT JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    GROUP BY 
        m.id, m.title, m.production_year
), 
RankedMovies AS (
    SELECT 
        *,
        ROW_NUMBER() OVER (PARTITION BY production_year ORDER BY cast_count DESC, keyword_count DESC) AS rn
    FROM 
        RecursiveMovieCTE
), 
CompanyInfo AS (
    SELECT 
        mc.movie_id,
        c.name AS company_name,
        ct.kind AS company_type,
        COUNT(DISTINCT mc.id) AS total_movies_by_company
    FROM 
        movie_companies mc
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    GROUP BY 
        mc.movie_id, c.name, ct.kind
), 
KeywordStatistics AS (
    SELECT 
        m.title,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords
    FROM 
        aka_title m
    LEFT JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        m.title
)

SELECT 
    rm.movie_id,
    rm.title,
    rm.production_year,
    rm.cast_count,
    rm.keyword_count,
    ci.company_name,
    ci.company_type,
    ks.keywords,
    CASE 
        WHEN rm.cast_count > 5 THEN 'Ensemble Cast'
        WHEN rm.cast_count BETWEEN 3 AND 5 THEN 'Moderate Cast'
        ELSE 'Minimal Cast' 
    END AS cast_type
FROM 
    RankedMovies rm
LEFT JOIN 
    CompanyInfo ci ON rm.movie_id = ci.movie_id AND ci.total_movies_by_company > 1
LEFT JOIN 
    KeywordStatistics ks ON rm.title = ks.title
WHERE 
    rm.rn <= 3 AND 
    rm.production_year IS NOT NULL AND 
    (ci.company_type <> 'Distributor' OR ci.company_type IS NULL)
ORDER BY 
    rm.production_year DESC, 
    rm.cast_count DESC,
    rm.keyword_count DESC;
