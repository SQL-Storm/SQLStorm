
WITH RECURSIVE MovieHierarchy AS (
    SELECT 
        ct.movie_id,
        t.title,
        ct.subject_id AS cast_member_id,
        1 AS level
    FROM 
        complete_cast ct
    JOIN 
        title t ON ct.movie_id = t.id
    WHERE 
        t.production_year = 2023

    UNION ALL

    SELECT 
        mh.movie_id,
        t.title,
        mh.cast_member_id,
        mh.level + 1
    FROM 
        MovieHierarchy mh
    JOIN 
        movie_link ml ON mh.movie_id = ml.movie_id
    JOIN 
        title t ON ml.linked_movie_id = t.id
    WHERE 
        t.production_year = 2023
)

SELECT 
    mh.title AS Movie_Title,
    COUNT(DISTINCT ci.person_id) AS Cast_Count,
    STRING_AGG(DISTINCT ak.name, ', ') AS Cast_Members,
    MAX(t.production_year) AS Latest_Production_Year,
    AVG(COALESCE(mi.info_length, 0)) AS Average_Info_Length,
    SUM(CASE 
            WHEN mi.info_type_id IN (SELECT id FROM info_type WHERE info = 'Genre') THEN 1 
            ELSE 0 
        END) AS Genre_Count,
    ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT ci.person_id) DESC) AS Rank_By_Cast
FROM 
    MovieHierarchy mh
JOIN 
    cast_info ci ON mh.cast_member_id = ci.id
JOIN 
    aka_title ak ON ci.movie_id = ak.movie_id
JOIN 
    title t ON mh.movie_id = t.id
LEFT JOIN 
    movie_info mi ON t.id = mi.movie_id
GROUP BY 
    mh.title, t.production_year
HAVING 
    COUNT(DISTINCT ci.person_id) > 0
ORDER BY 
    Rank_By_Cast ASC;
