
WITH ranked_titles AS (
    SELECT 
        a.name AS actor_name,
        t.title AS movie_title,
        t.production_year,
        RANK() OVER (PARTITION BY a.person_id ORDER BY t.production_year DESC) AS rank_year
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    JOIN 
        aka_title t ON c.movie_id = t.movie_id
    WHERE 
        t.production_year IS NOT NULL
),
company_info AS (
    SELECT 
        m.movie_id,
        ARRAY_AGG(DISTINCT cn.name) AS companies,
        COUNT(DISTINCT mci.company_type_id) AS company_type_count
    FROM 
        movie_companies mci
    JOIN 
        company_name cn ON mci.company_id = cn.id
    GROUP BY 
        m.movie_id
),
actor_movie_counts AS (
    SELECT 
        a.person_id,
        COUNT(DISTINCT c.movie_id) AS total_movies,
        SUM(CASE WHEN t.production_year > 2000 THEN 1 ELSE 0 END) AS post_2000_movies,
        SUM(CASE WHEN t.production_year <= 2000 THEN 1 ELSE 0 END) AS pre_2000_movies
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    JOIN 
        aka_title t ON c.movie_id = t.movie_id
    GROUP BY 
        a.person_id
),
actor_summary AS (
    SELECT 
        a.name,
        ac.total_movies,
        ac.post_2000_movies,
        ac.pre_2000_movies,
        ct.kind AS company_type
    FROM 
        aka_name a
    LEFT JOIN 
        actor_movie_counts ac ON a.person_id = ac.person_id
    LEFT JOIN 
        company_info ci ON ci.movie_id = (
            SELECT 
                movie_id 
            FROM 
                movie_companies 
            WHERE 
                company_type_id = (SELECT id FROM company_type WHERE kind = 'Distributor')
            LIMIT 1
        )
    LEFT JOIN 
        movie_companies mc ON mc.movie_id IN (SELECT movie_id FROM company_info)
    LEFT JOIN 
        company_type ct ON mc.company_type_id = ct.id
)
SELECT 
    actor_summary.name,
    actor_summary.total_movies,
    COALESCE(actor_summary.post_2000_movies, 0) AS post_2000_movies,
    COALESCE(actor_summary.pre_2000_movies, 0) AS pre_2000_movies,
    COALESCE(array_length(ci.companies, 1), 0) AS total_companies
FROM 
    actor_summary
LEFT JOIN 
    company_info ci ON ci.movie_id = (
        SELECT 
            movie_id 
        FROM 
            movie_companies 
        WHERE 
            company_type_id IN (SELECT id FROM company_type WHERE kind LIKE '%Production%')
            AND movie_id IS NOT NULL
        ORDER BY 
            RANDOM() LIMIT 1
    )
WHERE 
    actor_summary.total_movies IS NOT NULL
ORDER BY 
    actor_summary.total_movies DESC
LIMIT 20;
