
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT ki.id) AS keyword_count,
        COUNT(DISTINCT cc.person_id) AS cast_count
    FROM 
        aka_title t
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword ki ON mk.keyword_id = ki.id
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    GROUP BY 
        t.id, t.title, t.production_year
), 
TopMovies AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        rm.keyword_count,
        rm.cast_count,
        RANK() OVER (ORDER BY rm.keyword_count DESC, rm.cast_count DESC) AS ranking
    FROM 
        RankedMovies rm
)
SELECT 
    tm.movie_id,
    tm.title,
    tm.production_year,
    tm.keyword_count,
    tm.cast_count,
    ci.kind AS company_kind,
    STRING_AGG(DISTINCT cn.name, ', ') AS companies
FROM 
    TopMovies tm
LEFT JOIN 
    movie_companies mc ON tm.movie_id = mc.movie_id
LEFT JOIN 
    company_name cn ON mc.company_id = cn.id
LEFT JOIN 
    company_type ci ON mc.company_type_id = ci.id
WHERE 
    tm.ranking <= 10
GROUP BY 
    tm.movie_id, tm.title, tm.production_year, tm.keyword_count, tm.cast_count, ci.kind
ORDER BY 
    tm.keyword_count DESC, tm.cast_count DESC;
