
WITH RECURSIVE MovieHierarchy AS (
    SELECT
        mt.id AS movie_id,
        mt.title,
        mt.production_year,
        1 AS level,
        NULL AS parent_movie_id
    FROM
        aka_title mt
    WHERE
        mt.production_year IS NOT NULL
    
    UNION ALL
    
    SELECT
        ml.linked_movie_id AS movie_id,
        at.title,
        at.production_year,
        mh.level + 1,
        mh.movie_id AS parent_movie_id
    FROM
        MovieHierarchy mh
    JOIN 
        movie_link ml ON mh.movie_id = ml.movie_id
    JOIN 
        aka_title at ON ml.linked_movie_id = at.id
    WHERE
        mh.level < 3
),
EnglishMovies AS (
    SELECT 
        at.id AS movie_id,
        at.title,
        at.production_year,
        at.kind_id,
        ARRAY_AGG(DISTINCT ak.name) AS actors
    FROM 
        aka_title at
    JOIN 
        cast_info ci ON at.id = ci.movie_id
    JOIN 
        aka_name ak ON ci.person_id = ak.person_id
    WHERE 
        at.production_year > 2000
        AND ak.name IS NOT NULL
    GROUP BY 
        at.id, at.title, at.production_year, at.kind_id
)
SELECT 
    mh.movie_id,
    mh.title,
    mh.production_year,
    mh.level,
    em.actors,
    COUNT(DISTINCT em.movie_id) OVER (PARTITION BY mh.parent_movie_id) AS total_related_movies,
    COALESCE(NULLIF(em.kind_id, 1), 'Unknown') AS movie_kind
FROM 
    MovieHierarchy mh
LEFT JOIN 
    EnglishMovies em ON mh.movie_id = em.movie_id
ORDER BY 
    mh.level DESC, 
    mh.production_year DESC;
