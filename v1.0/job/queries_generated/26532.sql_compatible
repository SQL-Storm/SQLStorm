
WITH MovieDetails AS (
    SELECT 
        t.id AS movie_id,
        t.title AS title,
        t.production_year,
        STRING_AGG(DISTINCT ak.name, ', ') AS aka_names,
        STRING_AGG(DISTINCT kw.keyword, ', ') AS keywords
    FROM 
        aka_title ak 
    JOIN 
        title t ON ak.movie_id = t.id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword kw ON mk.keyword_id = kw.id
    GROUP BY 
        t.id, t.title, t.production_year
),
CompleteCast AS (
    SELECT 
        mc.movie_id,
        COUNT(DISTINCT ci.person_id) AS total_cast,
        STRING_AGG(DISTINCT CONCAT(pn.name, ' (', rt.role, ')') ORDER BY ci.nr_order) AS full_cast
    FROM 
        complete_cast mc 
    JOIN 
        cast_info ci ON mc.movie_id = ci.movie_id 
    JOIN 
        aka_name pn ON ci.person_id = pn.person_id
    JOIN 
        role_type rt ON ci.role_id = rt.id
    GROUP BY 
        mc.movie_id
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    md.aka_names,
    cc.total_cast,
    cc.full_cast,
    CASE 
        WHEN md.production_year < 2000 THEN 'Classic'
        WHEN md.production_year BETWEEN 2000 AND 2010 THEN 'Modern'
        ELSE 'Recent'
    END AS era
FROM 
    MovieDetails md
JOIN 
    CompleteCast cc ON md.movie_id = cc.movie_id
WHERE 
    md.keywords LIKE '%comedy%'
ORDER BY 
    md.production_year DESC, 
    cc.total_cast DESC;
