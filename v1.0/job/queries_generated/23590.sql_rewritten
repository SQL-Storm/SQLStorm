WITH RankedTitles AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
PersonTitleCount AS (
    SELECT 
        c.person_id,
        COUNT(DISTINCT ct.movie_id) AS movie_count,
        MAX(t.production_year) AS last_movie_year
    FROM 
        cast_info c
    LEFT JOIN 
        complete_cast cc ON c.movie_id = cc.movie_id
    LEFT JOIN 
        RankedTitles t ON cc.movie_id = t.title_id
    GROUP BY 
        c.person_id
),
CompanyInfo AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ' ORDER BY cn.name) AS company_names,
        STRING_AGG(DISTINCT ct.kind, ', ' ORDER BY ct.kind) AS company_types
    FROM 
        movie_companies mc
    INNER JOIN 
        company_name cn ON mc.company_id = cn.id
    INNER JOIN 
        company_type ct ON mc.company_type_id = ct.id
    GROUP BY 
        mc.movie_id
),
TitleKeywords AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(DISTINCT k.keyword ORDER BY k.keyword) AS keywords
    FROM 
        movie_keyword mk
    INNER JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
)
SELECT 
    p.id AS person_id,
    na.name AS person_name,
    COALESCE(ptc.movie_count, 0) AS total_movies,
    COALESCE(ptc.last_movie_year::text, 'N/A') AS last_movie_year,
    COALESCE(ct.movie_id, -1) AS movie_id,
    COALESCE(rt.title, 'Unknown Title') AS movie_title,
    COALESCE(cn.company_names, 'No Companies') AS production_companies,
    COALESCE(kw.keywords, 'No Keywords') AS movie_keywords
FROM 
    aka_name na
LEFT JOIN 
    PersonTitleCount ptc ON na.person_id = ptc.person_id
LEFT JOIN 
    complete_cast cc ON na.person_id = cc.subject_id
LEFT JOIN 
    RankedTitles rt ON cc.movie_id = rt.title_id AND rt.title_rank = 1  
LEFT JOIN 
    CompanyInfo cn ON cc.movie_id = cn.movie_id
LEFT JOIN 
    TitleKeywords kw ON cc.movie_id = kw.movie_id
WHERE 
    na.md5sum IS NOT NULL
AND 
    (na.name ILIKE '%smith%' OR ptc.total_movies > 5)
ORDER BY 
    person_name, last_movie_year DESC;