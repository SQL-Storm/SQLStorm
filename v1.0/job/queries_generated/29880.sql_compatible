
WITH movie_keyword_counts AS (
    SELECT 
        mk.movie_id, 
        COUNT(mk.keyword_id) AS keyword_count
    FROM 
        movie_keyword mk
    GROUP BY 
        mk.movie_id
),
actor_movie_titles AS (
    SELECT 
        ci.movie_id, 
        STRING_AGG(DISTINCT t.title ORDER BY t.title) AS titles,
        COUNT(DISTINCT ci.person_id) AS actor_count
    FROM 
        cast_info ci
    JOIN 
        title t ON ci.movie_id = t.id
    GROUP BY 
        ci.movie_id
),
company_movie_info AS (
    SELECT 
        mc.movie_id, 
        STRING_AGG(DISTINCT cn.name) AS companies, 
        COUNT(DISTINCT mc.company_id) AS company_count
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        mc.movie_id
)
SELECT 
    t.id AS movie_id,
    t.title,
    t.production_year,
    COALESCE(kc.keyword_count, 0) AS keyword_count,
    COALESCE(am.titles, '') AS actor_titles,
    COALESCE(am.actor_count, 0) AS actor_count,
    COALESCE(cmi.companies, '') AS companies,
    COALESCE(cmi.company_count, 0) AS company_count
FROM 
    title t
LEFT JOIN 
    movie_keyword_counts kc ON t.id = kc.movie_id
LEFT JOIN 
    actor_movie_titles am ON t.id = am.movie_id
LEFT JOIN 
    company_movie_info cmi ON t.id = cmi.movie_id
WHERE 
    t.production_year BETWEEN 2000 AND 2023
ORDER BY 
    t.production_year DESC, 
    t.title;
