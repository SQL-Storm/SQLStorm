
WITH ranked_movies AS (
    SELECT 
        a.title,
        a.production_year,
        COUNT(c.person_id) AS cast_count,
        RANK() OVER (PARTITION BY a.production_year ORDER BY COUNT(c.person_id) DESC) AS rank
    FROM 
        aka_title a
    LEFT JOIN 
        cast_info c ON a.id = c.movie_id
    WHERE 
        a.kind_id IN (SELECT id FROM kind_type WHERE kind LIKE 'feature%')
    GROUP BY 
        a.title, a.production_year, a.id
),
filtered_movies AS (
    SELECT 
        m.title,
        m.production_year,
        m.cast_count
    FROM 
        ranked_movies m
    WHERE 
        m.rank <= 5
),
movie_details AS (
    SELECT 
        f.title,
        f.production_year,
        COALESCE(GROUP_CONCAT(DISTINCT k.keyword), 'No Keywords') AS keywords,
        STRING_AGG(DISTINCT cn.name, ', ') AS company_names
    FROM 
        filtered_movies f
    LEFT JOIN 
        movie_keyword mk ON f.title = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        movie_companies mc ON f.title = mc.movie_id
    LEFT JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        f.title, f.production_year
)
SELECT 
    md.title,
    md.production_year,
    md.keywords,
    md.company_names,
    COALESCE(mi.info, 'No Info Available') AS info
FROM 
    movie_details md
LEFT JOIN 
    movie_info mi ON md.title = mi.movie_id AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'Plot')
WHERE 
    md.production_year >= 2000
ORDER BY 
    md.production_year DESC, md.title;
