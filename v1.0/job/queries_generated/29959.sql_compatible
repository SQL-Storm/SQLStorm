
WITH movie_cast AS (
    SELECT 
        mc.movie_id,
        m.title,
        STRING_AGG(DISTINCT ak.name, ', ' ORDER BY ak.name) AS actors,
        COUNT(DISTINCT ak.id) AS num_actors,
        MAX(m.production_year) AS production_year
    FROM movie_companies mc
    JOIN title m ON mc.movie_id = m.id
    JOIN cast_info ci ON mc.movie_id = ci.movie_id
    JOIN aka_name ak ON ci.person_id = ak.person_id
    WHERE m.production_year >= 1990
    AND m.kind_id = (SELECT id FROM kind_type WHERE kind = 'movie')
    GROUP BY mc.movie_id, m.title
),
keyword_filter AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(DISTINCT k.keyword, ', ' ORDER BY k.keyword) AS keywords
    FROM movie_keyword mk
    JOIN keyword k ON mk.keyword_id = k.id
    GROUP BY mk.movie_id
)
SELECT 
    mc.title,
    mc.actors,
    mc.num_actors,
    kf.keywords,
    mc.production_year
FROM movie_cast mc
LEFT JOIN keyword_filter kf ON mc.movie_id = kf.movie_id
WHERE mc.num_actors > 3
ORDER BY mc.production_year DESC, mc.title;
