
WITH RankedMovies AS (
    SELECT 
        a.title, 
        a.production_year, 
        a.kind_id,
        ROW_NUMBER() OVER (PARTITION BY a.kind_id ORDER BY a.production_year DESC) AS rank
    FROM 
        aka_title a
    WHERE 
        a.production_year IS NOT NULL
),
TopMovies AS (
    SELECT 
        r.title, 
        r.production_year, 
        k.keyword, 
        COALESCE(mc.note, 'No Info') AS company_note
    FROM 
        RankedMovies r
    LEFT JOIN 
        movie_keyword mk ON r.title = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        movie_companies mc ON r.title = mc.movie_id
    WHERE 
        r.rank <= 10
),
ActorDetails AS (
    SELECT 
        cn.name AS actor_name, 
        COUNT(DISTINCT ci.movie_id) AS movie_count
    FROM 
        cast_info ci
    JOIN 
        aka_name cn ON ci.person_id = cn.person_id
    GROUP BY 
        cn.name
)
SELECT 
    tm.title, 
    tm.production_year, 
    tm.keyword, 
    ad.actor_name, 
    ad.movie_count
FROM 
    TopMovies tm
FULL OUTER JOIN 
    ActorDetails ad ON tm.title = ad.actor_name
WHERE 
    (tm.keyword IS NOT NULL OR ad.movie_count > 5)
ORDER BY 
    tm.production_year DESC;
