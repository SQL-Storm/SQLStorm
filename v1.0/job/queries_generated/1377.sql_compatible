
WITH RankedMovies AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT c.person_id) AS cast_count
    FROM 
        title t
    LEFT JOIN 
        complete_cast cc ON t.id = cc.movie_id
    LEFT JOIN 
        cast_info c ON cc.subject_id = c.id
    WHERE 
        t.production_year IS NOT NULL 
    GROUP BY 
        t.id, t.title, t.production_year
),
ActorAwards AS (
    SELECT 
        a.person_id,
        a.name,
        COUNT(DISTINCT ma.id) AS awards_count
    FROM 
        aka_name a
    INNER JOIN 
        cast_info ci ON a.person_id = ci.person_id
    LEFT JOIN 
        movie_info mi ON ci.movie_id = mi.movie_id AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'award')
    LEFT JOIN 
        title t ON ci.movie_id = t.id
    WHERE 
        t.production_year BETWEEN 2000 AND 2023
    GROUP BY 
        a.person_id, a.name
),
TopActors AS (
    SELECT 
        person_id,
        name,
        awards_count
    FROM 
        ActorAwards
    WHERE 
        awards_count > 0
)
SELECT 
    rm.title,
    rm.production_year,
    rm.cast_count,
    ta.name AS top_actor,
    ta.awards_count
FROM 
    RankedMovies rm
LEFT JOIN 
    TopActors ta ON rm.cast_count > 5 AND rm.title_id IN (
        SELECT 
            ci.movie_id
        FROM 
            cast_info ci
        WHERE 
            ci.person_id = ta.person_id
    )
WHERE 
    rm.cast_count >= (
        SELECT 
            AVG(cast_count)
        FROM 
            RankedMovies
    )
ORDER BY 
    rm.production_year DESC, rm.cast_count DESC;
