
WITH RankedMovies AS (
    SELECT 
        t.title,
        t.production_year,
        k.keyword,
        ROW_NUMBER() OVER (PARTITION BY t.id ORDER BY k.keyword) AS keyword_rank
    FROM 
        aka_title t
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        t.production_year BETWEEN 2000 AND 2023
),
ActorRoles AS (
    SELECT 
        a.name AS actor_name,
        r.role,
        COUNT(c.id) AS movie_count
    FROM 
        cast_info c
    JOIN 
        aka_name a ON c.person_id = a.person_id
    JOIN 
        role_type r ON c.role_id = r.id
    WHERE 
        a.name IS NOT NULL
    GROUP BY 
        a.name, r.role
),
CompanyMovies AS (
    SELECT 
        c.name AS company_name,
        COUNT(mc.movie_id) AS movies_produced
    FROM 
        movie_companies mc
    JOIN 
        company_name c ON mc.company_id = c.id
    WHERE 
        c.country_code = 'USA'
    GROUP BY 
        c.name
)
SELECT 
    rm.title,
    rm.production_year,
    rm.keyword,
    ar.actor_name,
    ar.role,
    ar.movie_count,
    cm.company_name,
    cm.movies_produced
FROM 
    RankedMovies rm
LEFT JOIN 
    ActorRoles ar ON rm.title IN (
        SELECT 
            t.title 
        FROM 
            aka_title t
        JOIN 
            cast_info ci ON t.id = ci.movie_id
        JOIN 
            aka_name an ON ci.person_id = an.person_id
        WHERE 
            an.name = ar.actor_name
    )
LEFT JOIN 
    CompanyMovies cm ON rm.title IN (
        SELECT 
            t.title 
        FROM 
            aka_title t
        JOIN 
            movie_companies mc ON t.id = mc.movie_id
        JOIN 
            company_name cn ON mc.company_id = cn.id
        WHERE 
            cn.name = cm.company_name
    )
WHERE 
    rm.keyword_rank = 1
ORDER BY 
    rm.production_year DESC, ar.movie_count DESC;
