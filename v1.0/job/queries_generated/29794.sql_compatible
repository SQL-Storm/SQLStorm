
WITH NameCounts AS (
    SELECT 
        a.person_id,
        COUNT(DISTINCT a.name) AS aka_count,
        STRING_AGG(DISTINCT a.name, ', ') AS aka_names
    FROM 
        aka_name a
    GROUP BY 
        a.person_id
),
MovieOverview AS (
    SELECT 
        m.id AS movie_id,
        m.title AS movie_title,
        m.production_year,
        COUNT(DISTINCT ci.person_id) AS cast_count,
        STRING_AGG(DISTINCT c.name, ', ') AS cast_names
    FROM 
        aka_title m
    JOIN 
        cast_info ci ON m.id = ci.movie_id
    JOIN 
        aka_name c ON ci.person_id = c.person_id
    GROUP BY 
        m.id, m.title, m.production_year
),
KeywordOverview AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
)
SELECT 
    mo.movie_id,
    mo.movie_title,
    mo.production_year,
    mo.cast_count,
    mo.cast_names,
    kc.keywords,
    nc.aka_count,
    nc.aka_names
FROM 
    MovieOverview mo
LEFT JOIN 
    KeywordOverview kc ON mo.movie_id = kc.movie_id
LEFT JOIN 
    NameCounts nc ON mo.cast_names LIKE CONCAT('%', nc.aka_names, '%')
WHERE 
    mo.production_year >= 2000
ORDER BY 
    mo.production_year DESC, 
    mo.cast_count DESC;
