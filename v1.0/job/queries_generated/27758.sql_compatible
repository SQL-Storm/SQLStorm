
WITH MovieDetails AS (
    SELECT 
        t.id AS movie_id,
        t.title AS movie_title,
        t.production_year,
        STRING_AGG(DISTINCT ka.name, ', ') AS aliases,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords
    FROM aka_title AS t
    LEFT JOIN movie_keyword AS mk ON t.id = mk.movie_id
    LEFT JOIN keyword AS k ON mk.keyword_id = k.id
    LEFT JOIN movie_companies AS mc ON t.id = mc.movie_id
    LEFT JOIN company_name AS c ON mc.company_id = c.id
    LEFT JOIN aka_name AS ka ON ka.person_id IN (
        SELECT person_id FROM cast_info WHERE movie_id = t.id
    )
    WHERE t.production_year >= 2000
    GROUP BY t.id, t.title, t.production_year
),

RoleCounts AS (
    SELECT 
        ci.movie_id,
        rt.role,
        COUNT(*) AS role_count
    FROM cast_info AS ci
    JOIN role_type AS rt ON ci.role_id = rt.id
    GROUP BY ci.movie_id, rt.role
),

FinalResult AS (
    SELECT 
        md.movie_id,
        md.movie_title,
        md.production_year,
        md.aliases,
        md.keywords,
        rc.role,
        rc.role_count
    FROM MovieDetails AS md
    LEFT JOIN RoleCounts AS rc ON md.movie_id = rc.movie_id
)

SELECT 
    movie_id,
    movie_title,
    production_year,
    aliases,
    keywords,
    role,
    role_count
FROM FinalResult
ORDER BY production_year DESC, movie_title;
