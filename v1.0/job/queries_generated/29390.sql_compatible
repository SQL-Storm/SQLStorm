
WITH MovieDetails AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        c.name AS company_name,
        k.keyword AS movie_keyword,
        a.name AS actor_name
    FROM 
        aka_title t
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    WHERE 
        t.production_year >= 2000 
        AND c.country_code = 'USA'
        AND k.keyword LIKE '%action%'
),
AggregatedData AS (
    SELECT 
        movie_title,
        production_year,
        ARRAY_AGG(DISTINCT company_name) AS companies,
        ARRAY_AGG(DISTINCT movie_keyword) AS keywords,
        ARRAY_AGG(DISTINCT actor_name) AS cast
    FROM 
        MovieDetails
    GROUP BY 
        movie_title, production_year
)
SELECT 
    movie_title,
    production_year,
    CARDINALITY(companies) AS num_companies,
    CARDINALITY(keywords) AS num_keywords,
    CARDINALITY(cast) AS num_cast_members
FROM 
    AggregatedData
ORDER BY 
    production_year DESC, num_cast_members DESC;
