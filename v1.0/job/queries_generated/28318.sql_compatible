
WITH actor_movie_info AS (
    SELECT 
        a.name AS actor_name,
        t.title AS movie_title,
        t.production_year,
        r.role AS actor_role,
        c.note AS cast_note
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    JOIN 
        title t ON c.movie_id = t.id
    JOIN 
        role_type r ON c.role_id = r.id
    WHERE 
        a.name LIKE 'John%' 
        AND t.production_year >= 2000
),
movie_keywords AS (
    SELECT 
        m.movie_id,
        GROUP_CONCAT(k.keyword) AS keywords
    FROM 
        movie_keyword m
    JOIN 
        keyword k ON m.keyword_id = k.id
    GROUP BY 
        m.movie_id
),
detailed_movies AS (
    SELECT 
        ami.actor_name,
        ami.movie_title,
        ami.production_year,
        ami.actor_role,
        ami.cast_note,
        mk.keywords
    FROM 
        actor_movie_info ami
    LEFT JOIN 
        movie_keywords mk ON mk.movie_id = CAST(ami.movie_title AS INTEGER)
)
SELECT 
    actor_name,
    movie_title,
    production_year,
    actor_role,
    cast_note,
    COALESCE(keywords, ARRAY[]::text[]) AS keywords
FROM 
    detailed_movies
ORDER BY 
    production_year DESC, actor_name;
