
WITH RECURSIVE movie_hierarchy AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        m.production_year,
        ml.linked_movie_id,
        1 AS depth
    FROM title m
    LEFT JOIN movie_link ml ON m.id = ml.movie_id
    WHERE m.production_year >= 2000
    
    UNION ALL
    
    SELECT 
        mh.movie_id,
        t.title,
        t.production_year,
        ml.linked_movie_id,
        mh.depth + 1
    FROM movie_hierarchy mh
    JOIN movie_link ml ON mh.linked_movie_id = ml.movie_id
    JOIN title t ON ml.linked_movie_id = t.id
)
SELECT 
    m.title AS main_movie,
    m.production_year,
    COUNT(DISTINCT c.person_id) AS total_cast,
    STRING_AGG(DISTINCT CAST(c.role_id AS text), ', ') AS roles,
    ARRAY_AGG(DISTINCT c.note ORDER BY c.nr_order) AS notes,
    mh.depth AS link_depth
FROM movie_hierarchy mh
JOIN title m ON mh.movie_id = m.id
LEFT JOIN cast_info c ON mh.movie_id = c.movie_id 
GROUP BY m.id, m.title, m.production_year, mh.depth
HAVING COUNT(DISTINCT c.person_id) > 5 AND mh.depth <= 3
ORDER BY link_depth, m.production_year DESC;
