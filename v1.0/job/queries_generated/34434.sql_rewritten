WITH RECURSIVE movie_hierarchy AS (
    SELECT
        m.id AS movie_id,
        t.title,
        t.production_year,
        COALESCE(c.name, 'Unknown') AS company_name,
        t.kind_id,
        1 AS level
    FROM
        aka_title t
    LEFT JOIN
        movie_companies mc ON t.id = mc.movie_id
    LEFT JOIN
        company_name c ON mc.company_id = c.id
    WHERE
        t.production_year >= 2000

    UNION ALL

    SELECT
        mh.movie_id,
        mh.title,
        mh.production_year,
        COALESCE(c.name, 'Unknown') AS company_name,
        mh.kind_id,
        mh.level + 1
    FROM
        movie_hierarchy mh
    JOIN
        movie_link ml ON mh.movie_id = ml.movie_id
    JOIN
        aka_title t ON ml.linked_movie_id = t.id
    LEFT JOIN
        movie_companies mc ON t.id = mc.movie_id
    LEFT JOIN
        company_name c ON mc.company_id = c.id
    WHERE
        mh.level < 5
)

SELECT
    title,
    production_year,
    company_name,
    COUNT(*) OVER (PARTITION BY production_year ORDER BY title) AS title_rank,
    CASE WHEN kind_id IN (SELECT id FROM kind_type WHERE kind LIKE '%Drama%') THEN 'Drama' ELSE 'Other' END AS genre_classification
FROM
    movie_hierarchy
WHERE
    company_name IS NOT NULL
ORDER BY
    production_year DESC,
    title_rank
LIMIT 100;