
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        RANK() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
FilteredCast AS (
    SELECT 
        c.movie_id,
        COUNT(DISTINCT c.person_id) AS num_of_actors
    FROM 
        cast_info c
    GROUP BY 
        c.movie_id
    HAVING 
        COUNT(DISTINCT c.person_id) > 2
),
MovieDetails AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        m.production_year,
        COALESCE(fc.num_of_actors, 0) AS actor_count,
        rn.title_rank,
        STRING_AGG(DISTINCT ak.name, ', ') AS aliases
    FROM 
        RankedMovies rn
    LEFT JOIN 
        FilteredCast fc ON rn.movie_id = fc.movie_id
    JOIN 
        aka_title m ON rn.movie_id = m.id
    LEFT JOIN 
        aka_name ak ON ak.person_id IN (SELECT person_id FROM cast_info WHERE movie_id = m.id)
    GROUP BY 
        m.id, m.title, m.production_year, rn.title_rank
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    md.actor_count,
    md.aliases
FROM 
    MovieDetails md
WHERE 
    md.actor_count > 2 AND 
    md.title_rank <= 5
ORDER BY 
    md.production_year DESC, 
    md.title ASC;
