
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS rank_year
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
ActorRoles AS (
    SELECT 
        a.id AS actor_id,
        a.name,
        ci.movie_id,
        rt.role AS role_name,
        COUNT(ci.person_role_id) AS role_count
    FROM 
        aka_name a
    JOIN 
        cast_info ci ON a.person_id = ci.person_id
    JOIN 
        role_type rt ON ci.role_id = rt.id
    GROUP BY 
        a.id, a.name, ci.movie_id, rt.role
)
SELECT 
    rm.title,
    rm.production_year,
    ar.name AS actor_name,
    ar.role_name,
    ar.role_count
FROM 
    RankedMovies rm
LEFT JOIN 
    ActorRoles ar ON rm.movie_id = ar.movie_id
WHERE 
    rm.rank_year <= 5
ORDER BY 
    rm.production_year DESC, ar.role_count DESC NULLS LAST
UNION ALL
SELECT 
    t.title,
    t.production_year,
    'Unknown Actor' AS actor_name,
    NULL AS role_name,
    0 AS role_count
FROM 
    aka_title t
WHERE 
    t.id NOT IN (SELECT ci.movie_id FROM cast_info ci)
ORDER BY 
    production_year DESC;
