
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
ActorMovies AS (
    SELECT 
        c.person_id,
        m.movie_id,
        COUNT(c.role_id) AS total_roles
    FROM 
        cast_info c
    JOIN 
        RankedMovies m ON c.movie_id = m.movie_id
    GROUP BY 
        c.person_id, m.movie_id
),
RecentActors AS (
    SELECT 
        am.person_id,
        ak.name,
        COUNT(DISTINCT am.movie_id) AS movie_count
    FROM 
        ActorMovies am
    JOIN 
        aka_name ak ON am.person_id = ak.person_id
    WHERE 
        ak.name IS NOT NULL
    GROUP BY 
        am.person_id, ak.name
    HAVING 
        COUNT(DISTINCT am.movie_id) > 5
),
MovieKeywords AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
)
SELECT 
    r.title,
    r.production_year,
    ra.name AS actor_name,
    ra.movie_count,
    mk.keywords
FROM 
    RankedMovies r
JOIN 
    RecentActors ra ON r.movie_id IN (SELECT am.movie_id FROM ActorMovies am WHERE am.person_id = ra.person_id)
LEFT JOIN 
    MovieKeywords mk ON r.movie_id = mk.movie_id
WHERE 
    r.production_year > 2000
  AND 
    mk.keywords IS NOT NULL
ORDER BY 
    r.production_year DESC, r.title;
