
WITH MovieDetails AS (
    SELECT 
        t.id AS title_id,
        t.title AS movie_title,
        t.production_year,
        a.name AS actor_name,
        p.gender,
        STRING_AGG(DISTINCT k.keyword, ',') AS movie_keywords,
        STRING_AGG(DISTINCT c.name, ',') AS production_companies
    FROM 
        title t
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    JOIN 
        name p ON p.id = a.person_id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        movie_companies mc ON t.id = mc.movie_id
    LEFT JOIN 
        company_name c ON mc.company_id = c.id
    WHERE 
        t.production_year BETWEEN 2000 AND 2023
    GROUP BY 
        t.id, a.name, p.gender, t.production_year
),
ActorGenderCount AS (
    SELECT 
        gender,
        COUNT(*) AS actor_count
    FROM 
        MovieDetails
    GROUP BY 
        gender
),
TopMovies AS (
    SELECT 
        movie_title,
        production_year,
        actor_name,
        movie_keywords,
        production_companies,
        ROW_NUMBER() OVER (PARTITION BY production_year ORDER BY actor_name) AS row_num
    FROM 
        MovieDetails
)
SELECT
    t.movie_title,
    t.production_year,
    t.actor_name,
    t.movie_keywords,
    t.production_companies,
    ag.actor_count AS total_actors
FROM 
    TopMovies t
JOIN 
    ActorGenderCount ag ON TRUE
WHERE 
    t.row_num <= 3
ORDER BY 
    t.production_year DESC, 
    t.movie_title;
