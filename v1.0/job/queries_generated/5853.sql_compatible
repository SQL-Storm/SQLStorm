
SELECT
    a.name AS actor_name,
    t.title AS movie_title,
    cct.kind AS cast_type,
    EXTRACT(YEAR FROM t.production_year) AS production_year,
    STRING_AGG(DISTINCT k.keyword, ', ') AS keywords
FROM
    aka_name a
JOIN
    cast_info ci ON a.person_id = ci.person_id
JOIN
    title t ON ci.movie_id = t.id
JOIN
    comp_cast_type cct ON ci.person_role_id = cct.id
LEFT JOIN
    movie_keyword mk ON t.id = mk.movie_id
LEFT JOIN
    keyword k ON mk.keyword_id = k.id
WHERE
    t.production_year IS NOT NULL
    AND cct.kind IS NOT NULL
GROUP BY
    a.name, t.title, cct.kind, t.production_year
ORDER BY
    production_year DESC, actor_name;
