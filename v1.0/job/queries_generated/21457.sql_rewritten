WITH RankedMovies AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank,
        COUNT(c.movie_id) OVER (PARTITION BY t.id) AS cast_count
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    WHERE 
        t.production_year IS NOT NULL
),
CastedActors AS (
    SELECT 
        a.name AS actor_name,
        cm.name AS company_name,
        mv.movie_title,
        mv.production_year,
        c.nr_order,
        ROW_NUMBER() OVER (PARTITION BY a.id ORDER BY c.nr_order) AS role_order
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    JOIN 
        RankedMovies mv ON c.movie_id = mv.movie_id
    LEFT JOIN 
        movie_companies mc ON mv.movie_id = mc.movie_id
    LEFT JOIN 
        company_name cm ON mc.company_id = cm.id
    WHERE 
        a.name IS NOT NULL
        AND c.nr_order IS NOT NULL
),
FamousDirectors AS (
    SELECT 
        p.person_id,
        p.name,
        COUNT(DISTINCT mc.movie_id) AS directed_movies
    FROM 
        aka_name p
    JOIN 
        movie_companies mc ON mc.company_id IN (
            SELECT id FROM company_name WHERE country_code = 'USA'
        )
    JOIN 
        movie_info mi ON mc.movie_id = mi.movie_id
    WHERE 
        mi.info_type_id = (SELECT id FROM info_type WHERE info = 'Director')
    GROUP BY 
        p.person_id, p.name
    HAVING 
        COUNT(DISTINCT mc.movie_id) > 5
),
MoviesWithKeyWords AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        aka_title m
    JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        m.id, m.title
)
SELECT 
    c.actor_name,
    c.movie_title,
    c.production_year,
    c.company_name,
    c.role_order,
    r.title_rank,
    f.name AS director_name,
    CASE 
        WHEN f.directed_movies IS NOT NULL THEN 'Prominent Director'
        ELSE 'Lesser Known Director'
    END AS director_status,
    COALESCE(mk.keywords, 'No Keywords Found') AS movie_keywords
FROM 
    CastedActors c
LEFT JOIN 
    RankedMovies r ON c.movie_title = r.movie_title AND c.production_year = r.production_year
LEFT JOIN 
    FamousDirectors f ON c.actor_name = f.name
LEFT JOIN 
    MoviesWithKeyWords mk ON c.movie_title = mk.title
WHERE 
    c.role_order <= 3 
    AND (c.company_name IS NULL OR c.company_name LIKE '%, Inc%') 
ORDER BY 
    c.production_year DESC, c.role_order ASC;