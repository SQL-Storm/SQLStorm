
WITH RankedMovies AS (
    SELECT 
        at.title,
        at.production_year,
        COUNT(ci.id) AS cast_count,
        RANK() OVER (PARTITION BY at.production_year ORDER BY COUNT(ci.id) DESC) AS rank
    FROM 
        aka_title at
    LEFT JOIN 
        cast_info ci ON at.id = ci.movie_id
    GROUP BY 
        at.title, at.production_year
),
RecentMovies AS (
    SELECT 
        title, 
        production_year 
    FROM 
        RankedMovies 
    WHERE 
        rank <= 5
),
MovieKeywords AS (
    SELECT 
        m.title,
        k.keyword,
        COUNT(mk.id) AS keyword_count
    FROM 
        movie_keyword mk
    JOIN 
        aka_title m ON mk.movie_id = m.id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        m.title, k.keyword
    HAVING 
        COUNT(mk.id) > 1
)
SELECT 
    rm.title AS recent_movie,
    rm.production_year,
    COALESCE(mk.keyword, 'No Keywords') AS keyword,
    rm.cast_count
FROM 
    RecentMovies rm
LEFT JOIN 
    MovieKeywords mk ON rm.title = mk.title
ORDER BY 
    rm.production_year DESC, 
    rm.cast_count DESC, 
    mk.keyword ASC;
