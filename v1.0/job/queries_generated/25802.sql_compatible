
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    t.production_year,
    STRING_AGG(DISTINCT k.keyword, ', ') AS keywords,
    STRING_AGG(DISTINCT c.kind, ', ') AS company_types,
    pi.info AS person_info,
    COUNT(DISTINCT cc.movie_id) AS movies_with_actor
FROM 
    aka_name a
JOIN 
    cast_info ci ON a.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
LEFT JOIN 
    movie_keyword mk ON t.id = mk.movie_id
LEFT JOIN 
    keyword k ON mk.keyword_id = k.id
LEFT JOIN 
    movie_companies mc ON t.id = mc.movie_id
LEFT JOIN 
    company_type c ON mc.company_type_id = c.id
LEFT JOIN 
    person_info pi ON a.person_id = pi.person_id
LEFT JOIN 
    complete_cast cc ON cc.movie_id = t.id AND cc.subject_id = a.id
WHERE 
    a.name IS NOT NULL
    AND t.production_year > 2000
    AND (pi.info_type_id IS NULL OR pi.note IS NOT NULL)
GROUP BY 
    a.name, t.title, t.production_year, pi.info
HAVING 
    movies_with_actor > 1
ORDER BY 
    movies_with_actor DESC, 
    a.name ASC;
