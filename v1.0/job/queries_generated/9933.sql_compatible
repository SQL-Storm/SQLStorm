
WITH RankedMovies AS (
    SELECT 
        mt.title AS movie_title, 
        mt.production_year, 
        COUNT(DISTINCT ci.person_id) AS cast_count,
        ARRAY_AGG(DISTINCT an.name) AS actor_names
    FROM 
        aka_title mt
    JOIN 
        complete_cast cc ON mt.id = cc.movie_id
    JOIN 
        cast_info ci ON cc.subject_id = ci.id
    JOIN 
        aka_name an ON ci.person_id = an.person_id
    WHERE 
        mt.production_year >= 2000
    GROUP BY 
        mt.id, mt.title, mt.production_year
),
MovieInfo AS (
    SELECT 
        rm.movie_title, 
        rm.production_year, 
        rm.cast_count, 
        mi.info AS movie_info
    FROM 
        RankedMovies rm
    LEFT JOIN 
        movie_info mi ON rm.movie_title = mi.info AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'Summary')
)
SELECT 
    m.movie_title, 
    m.production_year, 
    m.cast_count, 
    COALESCE(m.movie_info, 'No information available') AS movie_info,
    STRING_AGG(DISTINCT mn.name, ', ') AS associated_names
FROM 
    MovieInfo m
LEFT JOIN 
    movie_keyword mk ON m.movie_title = (SELECT title FROM aka_title WHERE id = mk.movie_id LIMIT 1)
LEFT JOIN 
    keyword k ON mk.keyword_id = k.id 
JOIN 
    name mn ON mn.imdb_id IN (SELECT DISTINCT person_id FROM aka_name WHERE name IN (SELECT UNNEST(m.actor_names)))
WHERE 
    k.keyword LIKE '%Action%'
GROUP BY 
    m.movie_title, m.production_year, m.cast_count, m.movie_info
ORDER BY 
    m.production_year DESC, m.cast_count DESC;
