
SELECT 
    t.title, 
    a.name, 
    c.nr_order, 
    pt.kind 
FROM 
    title t 
JOIN 
    cast_info c ON t.id = c.movie_id 
JOIN 
    aka_name a ON c.person_id = a.person_id 
JOIN 
    role_type pt ON c.role_id = pt.id 
WHERE 
    t.production_year = 2020 
GROUP BY 
    t.title, 
    a.name, 
    c.nr_order, 
    pt.kind 
ORDER BY 
    t.title;
