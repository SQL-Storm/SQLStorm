
WITH RankedMovies AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        m.production_year,
        ARRAY_AGG(DISTINCT c.role_id) AS role_ids,
        COUNT(DISTINCT ci.person_id) AS num_cast_members,
        COUNT(DISTINCT mk.keyword_id) AS num_keywords
    FROM 
        aka_title m
    JOIN 
        cast_info ci ON m.id = ci.movie_id
    JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    GROUP BY 
        m.id, m.title, m.production_year
), 

FilteredMovies AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        rm.num_cast_members,
        rm.num_keywords
    FROM 
        RankedMovies rm
    WHERE 
        rm.production_year > 2000 AND
        rm.num_cast_members > 5 AND
        rm.num_keywords > 2
)

SELECT 
    fm.movie_id,
    fm.title,
    fm.production_year,
    a.name AS leading_actor,
    COUNT(DISTINCT com.name) AS production_companies,
    STRING_AGG(DISTINCT mk.keyword, ', ') AS associated_keywords
FROM 
    FilteredMovies fm
JOIN 
    cast_info ci ON fm.movie_id = ci.movie_id
JOIN 
    aka_name a ON ci.person_id = a.person_id
JOIN 
    movie_companies mc ON fm.movie_id = mc.movie_id
JOIN 
    company_name com ON mc.company_id = com.id
JOIN 
    movie_keyword mk ON fm.movie_id = mk.movie_id
GROUP BY 
    fm.movie_id, fm.title, fm.production_year, a.name
ORDER BY 
    fm.production_year DESC, COUNT(DISTINCT com.name) DESC
LIMIT 10;
