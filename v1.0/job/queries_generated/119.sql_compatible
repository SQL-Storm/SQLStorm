
WITH MovieDetails AS (
    SELECT 
        a.title AS movie_title,
        a.production_year,
        k.keyword,
        c.note AS cast_note,
        ROW_NUMBER() OVER (PARTITION BY a.id ORDER BY c.nr_order) AS row_num
    FROM
        aka_title a
    JOIN
        movie_keyword mk ON a.id = mk.movie_id
    JOIN
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN
        complete_cast cc ON a.id = cc.movie_id
    LEFT JOIN
        cast_info c ON cc.subject_id = c.person_id
    WHERE 
        a.production_year BETWEEN 2000 AND 2023
        AND a.kind_id IN (SELECT id FROM kind_type WHERE kind LIKE '%Feature%')
    ORDER BY 
        a.production_year DESC
),
FilteredMovies AS (
    SELECT 
        movie_title,
        production_year,
        keyword,
        COALESCE(cast_note, 'No Role') AS cast_notes
    FROM 
        MovieDetails
    WHERE 
        row_num <= 3
)
SELECT 
    f.movie_title,
    f.production_year,
    f.keyword,
    f.cast_notes,
    COUNT(*) OVER (PARTITION BY f.production_year) AS movies_count_per_year
FROM 
    FilteredMovies f
WHERE 
    f.keyword IS NOT NULL
UNION ALL
SELECT 
    a.title,
    a.production_year,
    'N/A' AS keyword,
    'No Cast Information' AS cast_notes
FROM 
    aka_title a
WHERE 
    a.production_year = 1999
    AND NOT EXISTS (SELECT 1 FROM complete_cast cc WHERE cc.movie_id = a.id)
ORDER BY 
    production_year DESC, movie_title;
