
WITH ranked_movies AS (
    SELECT 
        m.title, 
        m.production_year, 
        COUNT(c.person_id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY m.production_year ORDER BY COUNT(c.person_id) DESC) AS rank
    FROM title m
    LEFT JOIN cast_info c ON m.id = c.movie_id
    WHERE m.production_year IS NOT NULL
    GROUP BY m.title, m.production_year
), 
popular_keywords AS (
    SELECT 
        mk.movie_id, 
        k.keyword, 
        COUNT(*) AS keyword_count
    FROM movie_keyword mk
    JOIN keyword k ON mk.keyword_id = k.id
    GROUP BY mk.movie_id, k.keyword
), 
company_info AS (
    SELECT 
        mc.movie_id, 
        cn.name AS company_name,
        ct.kind AS company_type
    FROM movie_companies mc
    JOIN company_name cn ON mc.company_id = cn.id
    JOIN company_type ct ON mc.company_type_id = ct.id
)
SELECT 
    rm.title AS movie_title,
    rm.production_year,
    COALESCE(rm.cast_count, 0) AS total_cast,
    pk.keyword AS movie_keyword,
    ci.company_name,
    ci.company_type
FROM ranked_movies rm
LEFT JOIN popular_keywords pk ON rm.title = (SELECT title FROM title WHERE id = pk.movie_id)
LEFT JOIN company_info ci ON rm.title = (SELECT title FROM title WHERE id = ci.movie_id)
WHERE rm.rank <= 5
ORDER BY rm.production_year DESC, rm.cast_count DESC, pk.keyword;
