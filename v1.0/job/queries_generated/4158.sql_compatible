
WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS year_rank
    FROM title t
    WHERE t.production_year >= 2000
), 
top_actors AS (
    SELECT 
        a.person_id,
        ak.name AS actor_name,
        COUNT(c.movie_id) AS movie_count
    FROM aka_name ak
    JOIN cast_info c ON ak.person_id = c.person_id
    GROUP BY a.person_id, ak.name
    HAVING COUNT(c.movie_id) > 5
), 
movie_company_info AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ') AS company_names,
        COUNT(DISTINCT mc.company_id) AS company_count
    FROM movie_companies mc
    JOIN company_name cn ON mc.company_id = cn.id
    GROUP BY mc.movie_id
)
SELECT 
    rm.title,
    rm.production_year,
    ta.actor_name,
    mci.company_names,
    mci.company_count
FROM ranked_movies rm
LEFT JOIN movie_company_info mci ON rm.movie_id = mci.movie_id
JOIN top_actors ta ON ta.movie_id = rm.movie_id
WHERE rm.year_rank <= 5
  AND (rm.production_year IS NOT NULL OR mci.company_count IS NOT NULL)
ORDER BY rm.production_year DESC, rm.title;
