
SELECT 
    t.title,
    n.name,
    c.note AS role_note
FROM 
    title t
JOIN 
    complete_cast cc ON t.id = cc.movie_id
JOIN 
    cast_info ci ON cc.subject_id = ci.id
JOIN 
    aka_name n ON ci.person_id = n.person_id
WHERE 
    t.production_year >= 2000
GROUP BY 
    t.title,
    n.name,
    c.note
ORDER BY 
    t.production_year DESC;
