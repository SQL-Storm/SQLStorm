
WITH RankedMovies AS (
    SELECT 
        t.title, 
        t.production_year, 
        k.keyword, 
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(mk.keyword_id) DESC) AS rank
    FROM 
        title t
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        t.production_year IS NOT NULL
    GROUP BY 
        t.title, t.production_year, k.keyword
),
TopMovies AS (
    SELECT 
        title, 
        production_year 
    FROM 
        RankedMovies 
    WHERE 
        rank <= 5
),
MovieCast AS (
    SELECT 
        c.movie_id,
        a.name AS actor_name,
        rc.role AS role_name
    FROM 
        cast_info c
    JOIN 
        aka_name a ON c.person_id = a.person_id
    JOIN 
        role_type rc ON c.role_id = rc.id
),
FinalOverview AS (
    SELECT 
        t.title, 
        t.production_year, 
        mc.actor_name, 
        mc.role_name,
        COUNT(DISTINCT mk.keyword_id) AS keyword_count
    FROM 
        TopMovies t
    LEFT JOIN 
        MovieCast mc ON t.title = mc.movie_id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    GROUP BY 
        t.title, t.production_year, mc.actor_name, mc.role_name
)
SELECT 
    fo.title, 
    fo.production_year, 
    fo.actor_name, 
    fo.role_name, 
    COALESCE(fo.keyword_count, 0) AS keyword_count
FROM 
    FinalOverview fo
WHERE 
    fo.actor_name IS NOT NULL 
ORDER BY 
    fo.production_year DESC, 
    fo.keyword_count DESC;
