
WITH RankedMovies AS (
    SELECT 
        a.title,
        a.production_year,
        a.imdb_index,
        k.keyword,
        ROW_NUMBER() OVER (PARTITION BY a.id ORDER BY a.production_year DESC) AS rank
    FROM 
        aka_title a
    JOIN 
        movie_keyword mk ON a.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        a.production_year >= 2000 
        AND k.keyword LIKE 'Drama%'  
),
MostPopularGenres AS (
    SELECT 
        ct.kind AS genre,
        COUNT(*) AS genre_count
    FROM 
        title t
    JOIN 
        kind_type ct ON t.kind_id = ct.id
    GROUP BY 
        ct.kind
    ORDER BY 
        genre_count DESC
    LIMIT 5 
)
SELECT 
    rm.title,
    rm.production_year,
    rm.imdb_index,
    mp.genre AS popular_genre,
    COUNT(ci.person_id) AS cast_count,
    STRING_AGG(DISTINCT no.name, ', ') AS unique_roles
FROM 
    RankedMovies rm
LEFT JOIN 
    complete_cast cc ON rm.imdb_index = cc.movie_id
LEFT JOIN 
    cast_info ci ON cc.id = ci.movie_id
LEFT JOIN 
    role_type no ON ci.role_id = no.id
JOIN 
    MostPopularGenres mp ON mp.genre = (SELECT kind FROM kind_type WHERE id = (SELECT kind_id FROM aka_title WHERE id = rm.id LIMIT 1))
WHERE 
    rm.rank = 1 
GROUP BY 
    rm.title, rm.production_year, rm.imdb_index, mp.genre
ORDER BY 
    rm.production_year DESC;
