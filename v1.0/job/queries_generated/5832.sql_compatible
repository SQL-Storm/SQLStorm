
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    cpt.kind AS cast_type,
    mn.name AS company_name,
    mi.info AS movie_info,
    kw.keyword AS movie_keyword
FROM 
    aka_name a
JOIN 
    cast_info ci ON a.person_id = ci.person_id
JOIN 
    aka_title t ON ci.movie_id = t.id
JOIN 
    complete_cast cc ON t.id = cc.movie_id
JOIN 
    movie_companies mc ON cc.movie_id = mc.movie_id
JOIN 
    company_name mn ON mc.company_id = mn.id
JOIN 
    movie_info mi ON mc.movie_id = mi.movie_id
JOIN 
    keyword kw ON t.id = kw.movie_id
JOIN 
    role_type rt ON ci.role_id = rt.id
JOIN 
    comp_cast_type cpt ON ci.person_role_id = cpt.id
WHERE 
    t.production_year BETWEEN 2000 AND 2020
    AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'Box Office')
    AND kw.keyword IN ('action', 'adventure', 'comedy')
GROUP BY 
    a.name, t.title, cpt.kind, mn.name, mi.info, kw.keyword
ORDER BY 
    t.production_year DESC, a.name;
