
WITH MovieData AS (
    SELECT 
        t.id AS movie_id,
        t.title AS movie_title,
        t.production_year,
        ARRAY_AGG(DISTINCT c.name ORDER BY c.name) AS cast_names,
        ARRAY_AGG(DISTINCT k.keyword ORDER BY k.keyword) AS keywords,
        STRING_AGG(DISTINCT p.info, '; ') AS person_info
    FROM 
        aka_title t
    JOIN 
        cast_info ci ON ci.movie_id = t.id
    JOIN 
        aka_name c ON c.person_id = ci.person_id
    LEFT JOIN 
        movie_keyword mk ON mk.movie_id = t.id
    LEFT JOIN 
        keyword k ON k.id = mk.keyword_id
    LEFT JOIN 
        person_info p ON p.person_id = ci.person_id
    WHERE 
        t.production_year >= 2000
    GROUP BY 
        t.id, t.title, t.production_year
),
CompanyData AS (
    SELECT 
        mc.movie_id,
        ARRAY_AGG(cn.name ORDER BY cn.name) AS companies,
        ARRAY_AGG(DISTINCT ct.kind ORDER BY ct.kind) AS company_types
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON cn.id = mc.company_id
    JOIN 
        company_type ct ON ct.id = mc.company_type_id
    GROUP BY 
        mc.movie_id
)
SELECT 
    md.movie_id,
    md.movie_title,
    md.production_year,
    COALESCE(md.cast_names, ARRAY[]::TEXT[]) AS cast_names,
    COALESCE(md.keywords, ARRAY[]::TEXT[]) AS keywords,
    COALESCE(md.person_info, '') AS person_info,
    COALESCE(cd.companies, ARRAY[]::TEXT[]) AS companies,
    COALESCE(cd.company_types, ARRAY[]::TEXT[]) AS company_types 
FROM 
    MovieData md
LEFT JOIN 
    CompanyData cd ON cd.movie_id = md.movie_id
ORDER BY 
    md.production_year DESC, 
    md.movie_title;
