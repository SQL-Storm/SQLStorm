
WITH ranked_movies AS (
    SELECT 
        t.title,
        t.production_year,
        COUNT(DISTINCT c.person_id) AS actor_count,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT c.person_id) DESC) AS rank
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info c ON t.movie_id = c.movie_id
    GROUP BY 
        t.title, t.production_year
),
top_movies AS (
    SELECT 
        rm.title,
        rm.production_year
    FROM 
        ranked_movies rm
    WHERE 
        rm.rank <= 5
),
company_info AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ') AS companies
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        mc.movie_id
)
SELECT 
    tm.title,
    tm.production_year,
    COALESCE(ci.companies, 'No companies listed') AS companies,
    (SELECT COUNT(DISTINCT cc.id) 
     FROM complete_cast cc 
     WHERE cc.movie_id = tm.movie_id) AS complete_cast_count
FROM 
    top_movies tm
LEFT JOIN 
    company_info ci ON tm.movie_id = ci.movie_id
ORDER BY 
    tm.production_year DESC, 
    complete_cast_count DESC;
