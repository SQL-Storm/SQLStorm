
WITH RankedTitles AS (
    SELECT 
        a.title,
        a.production_year,
        k.keyword,
        ROW_NUMBER() OVER (PARTITION BY a.id ORDER BY a.production_year DESC) AS rank
    FROM 
        aka_title a
    JOIN 
        movie_keyword mk ON a.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        a.kind_id IN (SELECT id FROM kind_type WHERE kind LIKE 'feature%')
),
TopActors AS (
    SELECT 
        ci.person_id,
        p.name,
        COUNT(DISTINCT ci.movie_id) AS movie_count
    FROM 
        cast_info ci
    JOIN 
        aka_name p ON ci.person_id = p.person_id
    GROUP BY 
        ci.person_id, p.name
    HAVING 
        COUNT(DISTINCT ci.movie_id) > 5
),
MoviesWithInfo AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        m.production_year,
        STRING_AGG(DISTINCT mi.info, ', ' ORDER BY mi.info_type_id) AS additional_info
    FROM 
        title m
    LEFT JOIN 
        movie_info mi ON m.id = mi.movie_id
    GROUP BY 
        m.id, m.title, m.production_year
)
SELECT 
    rt.title,
    rt.production_year,
    ta.name AS top_actor,
    mw.additional_info,
    rt.keyword
FROM 
    RankedTitles rt
JOIN 
    MoviesWithInfo mw ON rt.title = mw.title AND rt.production_year = mw.production_year
JOIN 
    TopActors ta ON ta.movie_count > 0
WHERE 
    rt.rank = 1 
ORDER BY 
    rt.production_year DESC, rt.keyword;
