
WITH RankedMovies AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        a.name AS actor_name,
        ROW_NUMBER() OVER (PARTITION BY t.id ORDER BY a.name) AS actor_rank
    FROM 
        aka_title t
    JOIN 
        cast_info c ON t.id = c.movie_id
    JOIN 
        aka_name a ON c.person_id = a.person_id
    WHERE 
        t.kind_id IN (SELECT id FROM kind_type WHERE kind = 'movie')
        AND t.production_year >= 2000
),
MovieKeywords AS (
    SELECT 
        m.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword m
    JOIN 
        keyword k ON m.keyword_id = k.id
    GROUP BY 
        m.movie_id
),
MovieDetails AS (
    SELECT 
        R.movie_title,
        R.production_year,
        R.actor_name,
        R.actor_rank,
        MK.keywords
    FROM 
        RankedMovies R
    LEFT JOIN 
        MovieKeywords MK ON R.id = MK.movie_id
)
SELECT 
    MD.movie_title,
    MD.production_year,
    MD.actor_name,
    MD.actor_rank,
    MD.keywords
FROM 
    MovieDetails MD
WHERE 
    MD.actor_rank <= 5
ORDER BY 
    MD.production_year DESC, 
    MD.movie_title ASC;
