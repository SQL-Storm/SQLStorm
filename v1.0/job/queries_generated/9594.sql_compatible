
SELECT 
    t.title AS movie_title,
    a.name AS actor_name,
    r.role AS role_name,
    c.note AS cast_note,
    cc.kind AS company_kind,
    mi.info AS movie_info,
    k.keyword AS movie_keyword,
    COUNT(DISTINCT t.id) AS total_movies,
    AVG(CASE WHEN m.production_year >= 2000 THEN 1 ELSE 0 END) * 100 AS percentage_post_2000
FROM 
    title t
JOIN 
    cast_info c ON t.id = c.movie_id
JOIN 
    aka_name a ON c.person_id = a.person_id
JOIN 
    role_type r ON c.role_id = r.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_type cc ON mc.company_type_id = cc.id
JOIN 
    movie_info mi ON t.id = mi.movie_id
JOIN 
    info_type it ON mi.info_type_id = it.id
JOIN 
    movie_keyword mk ON t.id = mk.movie_id
JOIN 
    keyword k ON mk.keyword_id = k.id
WHERE 
    it.info = 'Synopsis'
    AND t.production_year BETWEEN 1990 AND 2023
GROUP BY 
    t.title, a.name, r.role, c.note, cc.kind, mi.info, k.keyword
ORDER BY 
    total_movies DESC, movie_title ASC
LIMIT 100;
