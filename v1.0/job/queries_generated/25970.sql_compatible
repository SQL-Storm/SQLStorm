
WITH ranked_titles AS (
    SELECT 
        t.title,
        t.production_year,
        k.keyword,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS year_rank
    FROM 
        aka_title t
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        t.production_year >= 2000
        AND t.kind_id = (SELECT id FROM kind_type WHERE kind = 'movie')
),
cast_roles AS (
    SELECT 
        c.movie_id,
        p.name AS actor_name,
        r.role AS role_type
    FROM 
        cast_info c
    JOIN 
        aka_name p ON c.person_id = p.person_id
    JOIN 
        role_type r ON c.role_id = r.id
    WHERE 
        c.nr_order <= 3  
),
movie_company_info AS (
    SELECT 
        m.movie_id,
        STRING_AGG(DISTINCT co.name, ', ') AS companies
    FROM 
        movie_companies m
    JOIN 
        company_name co ON m.company_id = co.id
    GROUP BY 
        m.movie_id
),
final_benchmark AS (
    SELECT 
        rt.title,
        rt.production_year,
        rt.keyword,
        cr.actor_name,
        cr.role_type,
        mci.companies
    FROM 
        ranked_titles rt
    JOIN 
        cast_roles cr ON rt.title = cr.movie_id
    JOIN 
        movie_company_info mci ON rt.title = mci.movie_id 
    WHERE 
        rt.year_rank <= 5  
)
SELECT 
    production_year,
    COUNT(DISTINCT title) AS title_count,
    STRING_AGG(DISTINCT actor_name, ', ') AS actors,
    STRING_AGG(DISTINCT companies, '; ') AS production_companies
FROM 
    final_benchmark
GROUP BY 
    production_year
ORDER BY 
    production_year DESC;
