
WITH MovieDetails AS (
    SELECT 
        a.title AS movie_title,
        a.production_year,
        c.name AS company_name,
        km.keyword AS movie_keyword,
        ROW_NUMBER() OVER (PARTITION BY a.production_year ORDER BY a.title) AS rank
    FROM 
        aka_title a 
    LEFT JOIN 
        movie_companies mc ON a.id = mc.movie_id
    LEFT JOIN 
        company_name c ON mc.company_id = c.id
    LEFT JOIN 
        movie_keyword mk ON a.id = mk.movie_id
    LEFT JOIN 
        keyword km ON mk.keyword_id = km.id
    WHERE 
        a.production_year BETWEEN 2000 AND 2020
    AND 
        c.name IS NOT NULL
),

CastDetails AS (
    SELECT 
        m.movie_title,
        p.name AS actor_name,
        r.role,
        COUNT(DISTINCT ci.id) AS role_count
    FROM 
        MovieDetails m
    JOIN 
        complete_cast cc ON m.movie_title = cc.movie_id
    JOIN 
        cast_info ci ON cc.id = ci.movie_id
    JOIN 
        name p ON ci.person_id = p.id
    JOIN 
        role_type r ON ci.role_id = r.id
    GROUP BY 
        m.movie_title, p.name, r.role
)

SELECT 
    md.movie_title,
    md.production_year,
    cd.actor_name,
    cd.role,
    COALESCE(cd.role_count, 0) AS role_count,
    COALESCE((SELECT COUNT(*) FROM movie_info mi WHERE mi.movie_id = md.movie_title), 0) AS info_count
FROM 
    MovieDetails md
LEFT JOIN 
    CastDetails cd ON md.movie_title = cd.movie_title
WHERE 
    md.rank <= 10
ORDER BY 
    md.production_year DESC, 
    md.movie_title ASC;
