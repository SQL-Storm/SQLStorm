
WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT ci.person_id) DESC) AS rn
    FROM 
        aka_title t
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    GROUP BY 
        t.id, t.title, t.production_year
),
top_movie_year AS (
    SELECT 
        movie_id, title, production_year 
    FROM 
        ranked_movies 
    WHERE 
        rn = 1
),
company_movie AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(cn.name, ', ') AS company_names,
        ct.kind AS company_type
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    GROUP BY 
        mc.movie_id, ct.kind
)
SELECT 
    tm.title,
    tm.production_year,
    cm.company_names,
    cm.company_type,
    COALESCE(NULLIF(SUM(m.info_type_id), 0), 0) AS total_info_types,
    (SELECT COUNT(DISTINCT mw.keyword_id) 
     FROM movie_keyword mw 
     WHERE mw.movie_id = tm.movie_id) AS total_keywords,
    t.name AS actor_name,
    COUNT(DISTINCT cc.person_id) AS actor_count
FROM 
    top_movie_year tm
LEFT JOIN 
    company_movie cm ON tm.movie_id = cm.movie_id
LEFT JOIN 
    complete_cast cc ON tm.movie_id = cc.movie_id
LEFT JOIN 
    aka_name t ON cc.subject_id = t.id
LEFT JOIN 
    movie_info m ON tm.movie_id = m.movie_id
GROUP BY 
    tm.movie_id, tm.title, tm.production_year, cm.company_names, cm.company_type, t.name
HAVING 
    COUNT(DISTINCT cc.person_id) > 5
ORDER BY 
    tm.production_year DESC, actor_count DESC;
