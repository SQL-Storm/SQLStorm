
WITH RECURSIVE MovieCast AS (
    SELECT 
        ci.movie_id,
        ak.name AS actor_name,
        ak.id AS actor_id,
        ROW_NUMBER() OVER (PARTITION BY ci.movie_id ORDER BY ak.name) AS actor_order
    FROM 
        cast_info ci
    JOIN 
        aka_name ak ON ci.person_id = ak.person_id
    WHERE 
        ak.name IS NOT NULL
),
PopularMovies AS (
    SELECT 
        mt.id AS movie_id,
        mt.title,
        COUNT(DISTINCT mi.info_type_id) AS info_count,
        SUM(CASE WHEN mj.note IS NOT NULL THEN 1 ELSE 0 END) AS note_count
    FROM 
        aka_title mt
    LEFT JOIN 
        movie_info mi ON mt.id = mi.movie_id
    LEFT JOIN 
        movie_keyword mj ON mt.id = mj.movie_id
    GROUP BY 
        mt.id, mt.title 
    HAVING 
        COUNT(DISTINCT mi.info_type_id) > 0 
        AND SUM(CASE WHEN mj.note IS NOT NULL THEN 1 ELSE 0 END) >= 2
),
MovieAwards AS (
    SELECT 
        mc.movie_id,
        COUNT(DISTINCT mi.info_type_id) AS awards_count
    FROM 
        complete_cast mc
    JOIN 
        movie_info mi ON mc.movie_id = mi.movie_id
    WHERE 
        mi.info_type_id IN (SELECT id FROM info_type WHERE info = 'Awards')
    GROUP BY 
        mc.movie_id
    HAVING 
        COUNT(DISTINCT mi.info_type_id) > 0
),
FilteredMovies AS (
    SELECT 
        pm.movie_id,
        pm.title,
        ma.awards_count
    FROM 
        PopularMovies pm
    LEFT JOIN 
        MovieAwards ma ON pm.movie_id = ma.movie_id
    WHERE 
        ma.awards_count IS NULL OR ma.awards_count > 1
)
SELECT 
    fm.title,
    COALESCE(MAX(mc.actor_name), 'No actor') AS lead_actor,
    fm.awards_count,
    COUNT(DISTINCT ak.id) AS total_actors,
    STRING_AGG(DISTINCT ak.name, ', ') AS all_actors
FROM 
    FilteredMovies fm
LEFT JOIN 
    MovieCast mc ON fm.movie_id = mc.movie_id
LEFT JOIN 
    aka_name ak ON ak.id = mc.actor_id
GROUP BY 
    fm.movie_id, fm.title, fm.awards_count
ORDER BY 
    fm.awards_count DESC NULLS LAST, 
    fm.title ASC;
