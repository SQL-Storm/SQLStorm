
WITH RankedMovies AS (
    SELECT 
        a.title AS movie_title,
        a.production_year,
        ROW_NUMBER() OVER (PARTITION BY a.production_year ORDER BY a.production_year DESC) AS year_rank
    FROM 
        aka_title a
    WHERE 
        a.production_year IS NOT NULL
),
HighRatedMovies AS (
    SELECT 
        m.title,
        m.production_year,
        COUNT(DISTINCT k.keyword) AS keyword_count
    FROM 
        RankedMovies m
    LEFT JOIN 
        movie_keyword mk ON mk.movie_id = m.id
    LEFT JOIN 
        keyword k ON k.id = mk.keyword_id
    WHERE 
        m.year_rank <= 5
    GROUP BY 
        m.title, m.production_year
),
CompanyMovies AS (
    SELECT 
        c.name AS company_name,
        ct.kind AS company_type,
        mt.title AS movie_title,
        mt.production_year
    FROM 
        movie_companies mc
    JOIN 
        company_name c ON c.id = mc.company_id
    JOIN 
        company_type ct ON ct.id = mc.company_type_id
    JOIN 
        aka_title mt ON mt.id = mc.movie_id
)
SELECT 
    h.movie_title,
    h.production_year,
    cm.company_name,
    cm.company_type,
    COALESCE(h.keyword_count, 0) AS keyword_count
FROM 
    HighRatedMovies h
LEFT JOIN 
    CompanyMovies cm ON cm.movie_title = h.movie_title AND cm.production_year = h.production_year
WHERE 
    (h.keyword_count > 5 OR cm.company_type IS NOT NULL)
ORDER BY 
    h.production_year DESC, h.movie_title ASC;
