
WITH RECURSIVE movie_hierarchy AS (
    
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        0 AS depth
    FROM 
        title t
    WHERE 
        t.episode_of_id IS NULL

    UNION ALL
    
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        mh.depth + 1 AS depth
    FROM 
        title t
    JOIN 
        movie_hierarchy mh ON t.episode_of_id = mh.movie_id
)

SELECT 
    t.title AS movie_title,
    t.production_year,
    COALESCE(COUNT(e.id), 0) AS episode_count,
    ROUND(AVG(r.rating), 2) AS average_rating,
    STRING_AGG(DISTINCT a.name, ', ') AS actors
FROM 
    movie_hierarchy mh
LEFT JOIN 
    title t ON mh.movie_id = t.id
LEFT JOIN 
    cast_info c ON t.id = c.movie_id
LEFT JOIN 
    aka_name a ON c.person_id = a.person_id
LEFT JOIN 
    (SELECT movie_id, rating FROM movie_info WHERE info_type_id IN (SELECT id FROM info_type WHERE info = 'rating')) r ON t.id = r.movie_id
LEFT JOIN 
    title e ON e.episode_of_id = t.id
GROUP BY 
    t.id, t.title, t.production_year
ORDER BY 
    t.production_year DESC, 
    episode_count DESC
LIMIT 10;
