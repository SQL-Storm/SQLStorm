
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT ci.person_id) OVER (PARTITION BY t.id) AS cast_count,
        STRING_AGG(DISTINCT CONCAT(a.name, ' (', r.role, ')'), ', ') OVER (PARTITION BY t.id) AS cast_names,
        ROW_NUMBER() OVER (ORDER BY t.production_year DESC, t.title) AS rn
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info ci ON t.movie_id = ci.movie_id
    JOIN 
        role_type r ON ci.role_id = r.id
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    WHERE 
        t.kind_id IN (SELECT id FROM kind_type WHERE kind IN ('movie', 'tv series'))
),
CompanyMovies AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, '; ') AS companies,
        COUNT(DISTINCT mc.company_id) AS company_count
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        mc.movie_id
),
FilteredMovies AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        rm.cast_count,
        rm.cast_names,
        cm.companies,
        cm.company_count
    FROM 
        RankedMovies rm
    LEFT JOIN 
        CompanyMovies cm ON rm.movie_id = cm.movie_id
    WHERE 
        rm.cast_count > 5
        AND (rm.production_year IS NOT NULL OR cm.company_count > 0)
)
SELECT 
    fm.movie_id,
    fm.title,
    fm.production_year,
    fm.cast_count,
    COALESCE(fm.cast_names, 'No Cast Available') AS cast_names,
    COALESCE(fm.companies, 'No Companies Listed') AS companies,
    fm.company_count
FROM 
    FilteredMovies fm
WHERE 
    fm.production_year BETWEEN 1980 AND 1990
UNION ALL
SELECT 
    t.id AS movie_id,
    t.title,
    t.production_year,
    0 AS cast_count,
    'No Cast Available' AS cast_names,
    'No Companies Listed' AS companies,
    0 AS company_count
FROM 
    aka_title t
WHERE 
    t.kind_id = (SELECT id FROM kind_type WHERE kind = 'documentary')
    AND NOT EXISTS (
        SELECT 1 FROM cast_info ci WHERE ci.movie_id = t.movie_id
    )
ORDER BY 
    fm.production_year DESC, fm.title;
