
WITH RankedMovies AS (
    SELECT 
        t.title, 
        t.production_year, 
        k.keyword,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS rn
    FROM 
        aka_title t
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        t.production_year IS NOT NULL
),
ActorCounts AS (
    SELECT 
        c.movie_id,
        COUNT(DISTINCT c.person_id) AS actor_count
    FROM 
        cast_info c
    GROUP BY 
        c.movie_id
),
CompanyDetails AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ') AS company_names
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        mc.movie_id
)
SELECT 
    rm.title,
    rm.production_year,
    rc.actor_count,
    cd.company_names
FROM 
    RankedMovies rm
LEFT JOIN 
    ActorCounts rc ON rm.id = rc.movie_id
LEFT JOIN 
    CompanyDetails cd ON rm.id = cd.movie_id
WHERE 
    rm.rn <= 5 AND (rc.actor_count IS NULL OR rc.actor_count > 5)
ORDER BY 
    rm.production_year DESC, rm.title ASC;
