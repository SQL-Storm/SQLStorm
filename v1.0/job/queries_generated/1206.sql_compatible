
WITH ranked_titles AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
actor_movie_counts AS (
    SELECT 
        c.person_id,
        COUNT(DISTINCT c.movie_id) AS movie_count
    FROM 
        cast_info c
    INNER JOIN 
        ranked_titles rt ON c.movie_id = rt.title_id
    GROUP BY 
        c.person_id
),
top_actors AS (
    SELECT 
        ak.name,
        ac.movie_count,
        ak.person_id
    FROM 
        aka_name ak
    INNER JOIN 
        actor_movie_counts ac ON ak.person_id = ac.person_id
    WHERE 
        ac.movie_count >= 5
),
movie_details AS (
    SELECT 
        rt.title,
        rt.production_year,
        COUNT(DISTINCT c.person_id) AS actor_count
    FROM 
        ranked_titles rt
    LEFT JOIN 
        cast_info c ON rt.title_id = c.movie_id
    GROUP BY 
        rt.title, rt.production_year
),
high_actor_movies AS (
    SELECT 
        md.title,
        md.production_year
    FROM 
        movie_details md
    WHERE 
        md.actor_count > 5
)
SELECT 
    ta.name AS actor_name,
    ham.title AS movie_title,
    ham.production_year
FROM 
    top_actors ta
JOIN 
    high_actor_movies ham ON EXISTS (
        SELECT 
            1 
        FROM 
            cast_info ci 
        WHERE 
            ci.movie_id IN (SELECT rt.title_id FROM ranked_titles rt WHERE rt.production_year = ham.production_year)
            AND ci.person_id = ta.person_id
    )
ORDER BY 
    ham.production_year DESC, 
    ta.name;
