
SELECT 
    t.title, 
    a.name AS actor_name, 
    c.kind AS role_type 
FROM 
    aka_title AS t 
JOIN 
    cast_info AS ci ON t.id = ci.movie_id 
JOIN 
    aka_name AS a ON ci.person_id = a.person_id 
JOIN 
    role_type AS c ON ci.role_id = c.id 
WHERE 
    t.production_year = 2022 
GROUP BY 
    t.title, 
    a.name, 
    c.kind 
ORDER BY 
    t.title;
