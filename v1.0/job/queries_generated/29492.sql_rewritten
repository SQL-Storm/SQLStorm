WITH RankedMovies AS (
    SELECT 
        a.id AS title_id,
        a.title,
        a.production_year,
        a.imdb_index,
        COUNT(DISTINCT c.person_id) AS actor_count,
        STRING_AGG(DISTINCT ak.name, ', ') AS actor_names
    FROM 
        aka_title AS a
    JOIN 
        cast_info AS c ON a.id = c.movie_id
    JOIN 
        aka_name AS ak ON c.person_id = ak.person_id
    WHERE 
        a.production_year >= 2000 
    GROUP BY 
        a.id,
        a.title,
        a.production_year,
        a.imdb_index
),
MovieKeywords AS (
    SELECT 
        m.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword AS m
    JOIN 
        keyword AS k ON m.keyword_id = k.id
    GROUP BY 
        m.movie_id
),
MovieInfoAggregated AS (
    SELECT 
        mi.movie_id,
        STRING_AGG(DISTINCT info.info, '; ') AS movie_infos
    FROM 
        movie_info AS mi
    GROUP BY 
        mi.movie_id
)
SELECT 
    rm.title_id,
    rm.title,
    rm.production_year,
    rm.imdb_index,
    rm.actor_count,
    rm.actor_names,
    COALESCE(mk.keywords, 'No Keywords') AS keywords,
    COALESCE(mia.movie_infos, 'No Additional Info') AS additional_info
FROM 
    RankedMovies AS rm
LEFT JOIN 
    MovieKeywords AS mk ON rm.title_id = mk.movie_id
LEFT JOIN 
    MovieInfoAggregated AS mia ON rm.title_id = mia.movie_id
ORDER BY 
    rm.actor_count DESC, 
    rm.production_year DESC;