
WITH movie_details AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords,
        STRING_AGG(DISTINCT c.name, ', ') AS companies,
        ARRAY_AGG(DISTINCT r.role) AS roles,
        ARRAY_AGG(DISTINCT ak.name) AS aka_names
    FROM 
        aka_title ak
    JOIN 
        title t ON ak.movie_id = t.id
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        movie_companies mc ON t.id = mc.movie_id
    LEFT JOIN 
        company_name c ON mc.company_id = c.id
    LEFT JOIN 
        cast_info ci ON t.id = ci.movie_id
    LEFT JOIN 
        role_type r ON ci.role_id = r.id
    GROUP BY 
        t.id, t.title, t.production_year
), 
actor_details AS (
    SELECT 
        p.id AS person_id,
        ak.name,
        STRING_AGG(DISTINCT r.role, ', ') AS roles,
        STRING_AGG(DISTINCT m.title, ', ') AS movies,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords
    FROM 
        aka_name ak
    JOIN 
        cast_info ci ON ak.person_id = ci.person_id
    JOIN 
        title m ON ci.movie_id = m.id
    LEFT JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        role_type r ON ci.role_id = r.id
    GROUP BY 
        ak.id, ak.name, p.id
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    md.keywords,
    md.companies,
    md.roles AS movie_roles,
    ad.name AS actor_name,
    ad.roles AS actor_roles,
    ad.movies AS actor_movies,
    ad.keywords AS actor_keywords
FROM 
    movie_details md
JOIN 
    actor_details ad ON ad.movies LIKE CONCAT('%', md.title, '%')
ORDER BY 
    md.production_year DESC, ad.actor_name;
