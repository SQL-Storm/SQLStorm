
SELECT
    a.name AS aka_name,
    t.title AS movie_title,
    p.gender AS person_gender,
    ci.note AS cast_note,
    m.year AS production_year,
    k.keyword AS movie_keyword,
    l.link AS linked_movie
FROM
    aka_name a
JOIN
    cast_info ci ON a.person_id = ci.person_id
JOIN
    title t ON ci.movie_id = t.id
JOIN
    movie_info m ON t.id = m.movie_id
JOIN
    movie_keyword mk ON t.id = mk.movie_id
JOIN
    keyword k ON mk.keyword_id = k.id
JOIN
    movie_link ml ON t.id = ml.movie_id
JOIN
    link_type l ON ml.link_type_id = l.id
JOIN
    person_info p ON a.person_id = p.person_id
WHERE
    m.info_type_id = (SELECT id FROM info_type WHERE info = 'Production Year')
GROUP BY
    a.name, t.title, p.gender, ci.note, m.year, k.keyword, l.link
ORDER BY
    m.year DESC;
