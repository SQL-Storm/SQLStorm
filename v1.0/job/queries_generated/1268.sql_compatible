
WITH actor_movie_counts AS (
    SELECT 
        a.id AS actor_id,
        COUNT(DISTINCT ci.movie_id) AS movie_count
    FROM 
        aka_name a
    JOIN 
        cast_info ci ON a.person_id = ci.person_id
    GROUP BY 
        a.id
),
recent_movie_info AS (
    SELECT 
        mt.id AS movie_id,
        mt.title,
        mt.production_year,
        mt.kind_id,
        ROW_NUMBER() OVER (PARTITION BY mt.kind_id ORDER BY mt.production_year DESC) AS rn
    FROM 
        aka_title mt
    WHERE 
        mt.production_year > 2000
),
company_movie_count AS (
    SELECT 
        mc.movie_id,
        COUNT(DISTINCT co.company_id) AS company_count
    FROM 
        movie_companies mc
    JOIN 
        company_name co ON mc.company_id = co.id
    GROUP BY 
        mc.movie_id
)
SELECT 
    a.name AS actor_name,
    amc.movie_count,
    rm.movie_id,
    rm.title,
    rm.production_year,
    c.company_count
FROM 
    aka_name a
LEFT JOIN 
    actor_movie_counts amc ON a.id = amc.actor_id
JOIN 
    recent_movie_info rm ON amc.movie_count > 1 AND rm.rn <= 5
LEFT JOIN 
    company_movie_count c ON rm.movie_id = c.movie_id
WHERE 
    rm.production_year IS NOT NULL
    AND (c.company_count IS NULL OR c.company_count > 2)
ORDER BY 
    amc.movie_count DESC, 
    rm.production_year DESC, 
    a.name ASC;
