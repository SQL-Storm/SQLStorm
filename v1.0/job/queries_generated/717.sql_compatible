
WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS year_rank
    FROM 
        aka_title t
    WHERE 
        t.kind_id IN (SELECT id FROM kind_type WHERE kind IN ('movie', 'feature'))
),
cast_details AS (
    SELECT 
        c.movie_id,
        a.name AS actor_name,
        r.role AS role_name,
        COUNT(c.id) OVER (PARTITION BY c.movie_id) AS cast_count
    FROM 
        cast_info c
    JOIN 
        aka_name a ON c.person_id = a.person_id
    JOIN 
        role_type r ON c.role_id = r.id
),
movie_keywords AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords_list
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
),
company_details AS (
    SELECT 
        mc.movie_id,
        cn.name AS company_name,
        ct.kind AS company_type
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
),
combined_info AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        cd.actor_name,
        cd.role_name,
        cd.cast_count,
        mk.keywords_list,
        COALESCE(cd.cast_count, 0) AS total_cast
    FROM 
        ranked_movies rm
    LEFT JOIN 
        cast_details cd ON rm.movie_id = cd.movie_id
    LEFT JOIN 
        movie_keywords mk ON rm.movie_id = mk.movie_id
)
SELECT 
    ci.movie_id,
    ci.title,
    ci.production_year,
    COALESCE(ci.cast_count, 0) AS total_cast,
    ci.keywords_list,
    STRING_AGG(DISTINCT cp.company_name || ' (' || cp.company_type || ')') AS companies
FROM 
    combined_info ci
LEFT JOIN 
    company_details cp ON ci.movie_id = cp.movie_id
WHERE 
    ci.year_rank <= 10
GROUP BY 
    ci.movie_id, ci.title, ci.production_year, ci.cast_count, ci.keywords_list
ORDER BY 
    ci.production_year DESC, total_cast DESC;
