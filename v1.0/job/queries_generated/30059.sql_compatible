
WITH RECURSIVE CompanyHierarchy AS (
    SELECT 
        mc.movie_id,
        c.id AS company_id,
        c.name AS company_name,
        ct.kind AS company_type
    FROM movie_companies mc
    JOIN company_name c ON mc.company_id = c.id
    JOIN company_type ct ON mc.company_type_id = ct.id
    WHERE mc.note IS NULL

    UNION ALL

    SELECT 
        mh.movie_id,
        c.id AS company_id,
        c.name AS company_name,
        ct.kind AS company_type
    FROM movie_companies mh
    JOIN CompanyHierarchy ch ON mh.movie_id = ch.movie_id
    JOIN company_name c ON mh.company_id = c.id
    JOIN company_type ct ON mh.company_type_id = ct.id
    WHERE mh.note IS NULL
)

SELECT 
    ak.name AS actor_name,
    t.title AS movie_title,
    t.production_year,
    COUNT(DISTINCT m.id) AS total_movie_companies,
    STRING_AGG(DISTINCT ch.company_name, ', ') AS companies_involved,
    ROW_NUMBER() OVER (PARTITION BY ak.person_id ORDER BY COUNT(DISTINCT m.id) DESC) AS actor_rank
FROM aka_name ak
JOIN cast_info ci ON ak.person_id = ci.person_id
JOIN title t ON ci.movie_id = t.id
LEFT JOIN movie_companies m ON t.id = m.movie_id
LEFT JOIN CompanyHierarchy ch ON t.id = ch.movie_id
WHERE t.production_year >= 2000 
  AND (t.kind_id IN (1, 2) OR ak.surname_pcode IS NOT NULL)
GROUP BY ak.name, t.title, t.production_year, ak.person_id
HAVING COUNT(DISTINCT m.id) > 1
ORDER BY actor_rank, t.production_year DESC;
