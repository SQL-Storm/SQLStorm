
WITH RankedTitles AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        title t
    WHERE 
        t.production_year IS NOT NULL
),
ActorMovieCounts AS (
    SELECT 
        ci.person_id,
        COUNT(DISTINCT ci.movie_id) AS movie_count
    FROM 
        cast_info ci
    GROUP BY 
        ci.person_id
),
TopActors AS (
    SELECT 
        a.name,
        amc.movie_count,
        a.person_id
    FROM 
        aka_name a
    JOIN 
        ActorMovieCounts amc ON a.person_id = amc.person_id
    WHERE 
        amc.movie_count > 5
),
MovieInfo AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        mi.info AS genre_info,
        COALESCE(ki.keyword, 'No Keywords') AS keyword_info
    FROM 
        title m
    LEFT JOIN 
        movie_info mi ON m.id = mi.movie_id
    LEFT JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    LEFT JOIN 
        keyword ki ON mk.keyword_id = ki.id
)
SELECT 
    r.production_year,
    r.title AS title_name,
    ta.name AS actor_name,
    mi.genre_info,
    mi.keyword_info
FROM 
    RankedTitles r
LEFT JOIN 
    TopActors ta ON r.title_id = ta.movie_id
JOIN 
    MovieInfo mi ON r.title_id = mi.movie_id
WHERE 
    (r.title_rank <= 3 OR r.production_year >= 2000)
ORDER BY 
    r.production_year, title_name;
