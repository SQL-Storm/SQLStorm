
WITH ranked_movies AS (
    SELECT 
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS year_rank,
        COUNT(c.movie_id) OVER (PARTITION BY t.id) AS cast_count
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    WHERE 
        t.production_year IS NOT NULL
), 
company_movie_counts AS (
    SELECT 
        m.movie_id,
        COUNT(DISTINCT mc.company_id) AS company_count
    FROM 
        movie_companies mc
    JOIN 
        complete_cast m ON mc.movie_id = m.movie_id
    GROUP BY 
        m.movie_id
), 
title_keywords AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
)

SELECT 
    r.title,
    r.production_year,
    r.cast_count,
    COALESCE(cmc.company_count, 0) AS company_count,
    tk.keywords
FROM 
    ranked_movies r
LEFT JOIN 
    company_movie_counts cmc ON r.id = cmc.movie_id
LEFT JOIN 
    title_keywords tk ON r.id = tk.movie_id
WHERE 
    r.year_rank <= 5
ORDER BY 
    r.production_year DESC, r.cast_count DESC;
