
WITH RankedMovies AS (
    SELECT 
        a.title,
        a.production_year,
        COUNT(DISTINCT cc.person_id) AS total_cast,
        ROW_NUMBER() OVER (PARTITION BY a.production_year ORDER BY COUNT(DISTINCT cc.person_id) DESC) AS rank
    FROM 
        aka_title a
    LEFT JOIN 
        cast_info cc ON a.id = cc.movie_id
    GROUP BY 
        a.title, a.production_year
),
TopRatedMovies AS (
    SELECT 
        m.id,
        m.title,
        COALESCE(mi.info, 'No information available') AS info
    FROM 
        RankedMovies rm
    JOIN 
        title m ON rm.title = m.title AND rm.production_year = m.production_year
    LEFT JOIN 
        movie_info mi ON m.id = mi.movie_id AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'rating')
    WHERE 
        rm.rank <= 10
    ORDER BY 
        m.production_year DESC
)
SELECT 
    t.title,
    t.production_year,
    COALESCE(c.name, 'Unknown Actor') AS actor,
    COUNT(DISTINCT k.keyword) AS keyword_count
FROM 
    TopRatedMovies t
LEFT JOIN 
    cast_info ci ON t.id = ci.movie_id
LEFT JOIN 
    aka_name c ON ci.person_id = c.person_id
LEFT JOIN 
    movie_keyword mk ON t.id = mk.movie_id
LEFT JOIN 
    keyword k ON mk.keyword_id = k.id
GROUP BY 
    t.title, t.production_year, c.name
HAVING 
    COUNT(DISTINCT k.id) > 3
ORDER BY 
    t.production_year DESC, keyword_count DESC;
