
WITH ranked_movies AS (
    SELECT 
        a.title,
        a.production_year,
        ROW_NUMBER() OVER (PARTITION BY a.production_year ORDER BY a.production_year DESC) AS year_rank
    FROM aka_title a
    JOIN movie_keyword mk ON a.id = mk.movie_id
    JOIN keyword k ON mk.keyword_id = k.id
    WHERE k.keyword ILIKE '%action%'
      AND a.production_year IS NOT NULL
),
movie_cast AS (
    SELECT 
        a.id AS movie_id,
        ak.name AS actor_name,
        ak.person_id,
        c.nr_order,
        ROW_NUMBER() OVER (PARTITION BY a.id ORDER BY c.nr_order) AS cast_rank
    FROM aka_title a
    JOIN cast_info c ON a.id = c.movie_id
    JOIN aka_name ak ON c.person_id = ak.person_id
    WHERE c.person_role_id IS NOT NULL
),
company_info AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ') AS companies
    FROM movie_companies mc
    JOIN company_name cn ON mc.company_id = cn.id
    WHERE mc.company_type_id IN (SELECT id FROM company_type WHERE kind = 'Production')
    GROUP BY mc.movie_id
)
SELECT 
    rm.title,
    rm.production_year,
    COALESCE(mc.actor_name, 'Unknown Actor') AS main_actor,
    COALESCE(ci.companies, 'No Company Info') AS production_companies,
    COALESCE(MAX(mr.nr_order), 0) AS total_cast
FROM ranked_movies rm
LEFT JOIN movie_cast mc ON rm.id = mc.movie_id AND mc.cast_rank = 1
LEFT JOIN company_info ci ON rm.id = ci.movie_id
LEFT JOIN complete_cast mr ON rm.id = mr.movie_id
WHERE rm.year_rank <= 3
GROUP BY rm.title, rm.production_year, mc.actor_name, ci.companies
ORDER BY rm.production_year DESC;
