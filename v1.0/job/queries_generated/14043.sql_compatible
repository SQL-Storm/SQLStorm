
SELECT 
    n.name AS actor_name,
    t.title AS movie_title,
    t.production_year,
    c.note AS character_name,
    rt.kind AS role_type,
    m.name AS company_name
FROM 
    aka_name n
JOIN 
    cast_info ci ON n.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
JOIN 
    char_name c ON c.id = ci.role_id
JOIN 
    role_type rt ON ci.person_role_id = rt.id
JOIN 
    movie_companies mc ON mc.movie_id = t.id
JOIN 
    company_name m ON mc.company_id = m.id
JOIN 
    company_type ct ON mc.company_type_id = ct.id
WHERE 
    t.production_year > 2000
GROUP BY 
    n.name, t.title, t.production_year, c.note, rt.kind, m.name
ORDER BY 
    t.production_year DESC, 
    n.name;
