
WITH ranked_titles AS (
    SELECT 
        a.id AS aka_id,
        a.name AS aka_name,
        t.title AS movie_title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY a.person_id ORDER BY t.production_year DESC) AS title_rank
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    JOIN 
        aka_title t ON c.movie_id = t.movie_id
),
person_role_summary AS (
    SELECT 
        c.person_id,
        COUNT(DISTINCT c.movie_id) AS total_movies,
        STRING_AGG(DISTINCT r.role, ', ') AS roles
    FROM 
        cast_info c
    JOIN 
        role_type r ON c.role_id = r.id
    GROUP BY 
        c.person_id
),
movie_company_count AS (
    SELECT 
        m.movie_id, 
        COUNT(DISTINCT mc.company_id) AS company_count
    FROM 
        movie_companies mc
    JOIN 
        title m ON mc.movie_id = m.id
    GROUP BY 
        m.movie_id
)
SELECT 
    p.id AS person_id,
    p.gender,
    summ.total_movies,
    summ.roles,
    rt.aka_name,
    rt.movie_title,
    rt.production_year,
    mcc.company_count
FROM 
    person_info p
JOIN 
    person_role_summary summ ON p.person_id = summ.person_id
JOIN 
    ranked_titles rt ON summ.person_id = rt.aka_id AND rt.title_rank = 1
JOIN 
    movie_company_count mcc ON rt.movie_title = mcc.movie_id
WHERE 
    rt.production_year >= 2000
ORDER BY 
    p.gender DESC, 
    summ.total_movies DESC;
