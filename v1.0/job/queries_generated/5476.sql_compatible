
WITH RankedTitles AS (
    SELECT 
        t.title, 
        t.production_year, 
        t.kind_id, 
        ROW_NUMBER() OVER (PARTITION BY t.kind_id ORDER BY t.production_year DESC) AS rank
    FROM 
        aka_title AS t
    WHERE 
        t.production_year IS NOT NULL
),
ActorDetails AS (
    SELECT 
        a.name AS actor_name, 
        c.movie_id, 
        t.title, 
        t.production_year, 
        co.name AS company_name
    FROM 
        cast_info AS c
    JOIN 
        aka_name AS a ON c.person_id = a.person_id
    JOIN 
        title AS t ON c.movie_id = t.id
    LEFT JOIN 
        movie_companies AS mc ON c.movie_id = mc.movie_id
    LEFT JOIN 
        company_name AS co ON mc.company_id = co.id
),
MovieKeywords AS (
    SELECT 
        mk.movie_id, 
        ARRAY_AGG(k.keyword) AS keywords
    FROM 
        movie_keyword AS mk
    JOIN 
        keyword AS k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
)
SELECT 
    ad.actor_name, 
    rt.title, 
    rt.production_year, 
    ad.company_name, 
    mk.keywords
FROM 
    ActorDetails AS ad
JOIN 
    RankedTitles AS rt ON ad.movie_id = rt.movie_id
JOIN 
    MovieKeywords AS mk ON ad.movie_id = mk.movie_id
WHERE 
    rt.rank <= 5
ORDER BY 
    ad.actor_name, rt.production_year DESC;
