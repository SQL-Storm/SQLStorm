
WITH movie_data AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        ak.name AS actor_name,
        ak.imdb_index AS actor_index,
        r.role AS actor_role,
        c.company_id,
        c.note AS company_note,
        rtt.kind AS role_type
    FROM 
        aka_title t
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        aka_name ak ON ci.person_id = ak.person_id
    JOIN 
        role_type r ON ci.role_id = r.id
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    JOIN 
        kind_type kt ON t.kind_id = kt.id
    WHERE 
        t.production_year >= 2000
        AND ak.name IS NOT NULL
        AND ci.nr_order < 5
),

actor_summary AS (
    SELECT 
        actor_index,
        COUNT(DISTINCT movie_title) AS movie_count,
        STRING_AGG(DISTINCT movie_title, ', ') AS movie_titles,
        STRING_AGG(DISTINCT company_note, ', ') AS companies
    FROM 
        movie_data
    GROUP BY 
        actor_index
)

SELECT 
    asum.actor_index,
    a.name AS actor_name,
    asum.movie_count,
    asum.movie_titles,
    asum.companies,
    SUM(CASE WHEN asum.movie_count > 3 THEN 1 ELSE 0 END) AS prolific_actors_count
FROM 
    actor_summary asum
JOIN 
    aka_name a ON a.imdb_index = asum.actor_index
WHERE 
    a.name ILIKE '%Smith%'
GROUP BY 
    asum.actor_index, a.name, asum.movie_count, asum.movie_titles, asum.companies
ORDER BY 
    asum.movie_count DESC;
