
WITH RankedMovies AS (
    SELECT 
        mt.id AS movie_id,
        mt.title,
        COALESCE(GROUP_CONCAT(DISTINCT ck.keyword ORDER BY ck.keyword), 'No Keywords') AS keywords,
        COUNT(DISTINCT ci.person_id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY mt.production_year ORDER BY COUNT(DISTINCT ci.person_id) DESC) AS rank,
        mt.production_year
    FROM 
        aka_title mt
    LEFT JOIN 
        movie_keyword mk ON mt.id = mk.movie_id
    LEFT JOIN 
        keyword ck ON mk.keyword_id = ck.id
    LEFT JOIN 
        cast_info ci ON mt.id = ci.movie_id
    WHERE 
        mt.production_year IS NOT NULL
    GROUP BY 
        mt.id, mt.title, mt.production_year
),

FilteredMovies AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.keywords,
        rm.cast_count,
        rm.production_year
    FROM 
        RankedMovies rm
    WHERE 
        rm.rank <= 5
)

SELECT 
    fm.title,
    fm.production_year,
    fm.keywords,
    COALESCE(MAX(person_info.info), 'No Additional Info') AS additional_info
FROM 
    FilteredMovies fm
LEFT JOIN 
    complete_cast cc ON fm.movie_id = cc.movie_id
LEFT JOIN 
    person_info ON cc.subject_id = person_info.person_id
WHERE 
    person_info.info_type_id IN (SELECT id FROM info_type WHERE info = 'Biography')
GROUP BY 
    fm.movie_id, fm.title, fm.production_year, fm.keywords
ORDER BY 
    fm.production_year DESC, fm.cast_count DESC;
