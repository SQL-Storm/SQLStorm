WITH RankedTitles AS (
    SELECT 
        a.id AS aka_id,
        a.name AS actor_name,
        t.title AS movie_title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY a.person_id ORDER BY t.production_year DESC) AS rn
    FROM 
        aka_name a
    JOIN 
        cast_info ci ON a.person_id = ci.person_id
    JOIN 
        aka_title t ON ci.movie_id = t.movie_id
    WHERE 
        t.production_year IS NOT NULL
), FilteredTitles AS (
    SELECT 
        aka_id,
        actor_name,
        movie_title,
        production_year
    FROM 
        RankedTitles
    WHERE 
        rn <= 3  
), MovieInfo AS (
    SELECT 
        mt.movie_id,
        STRING_AGG(mk.keyword, ', ') AS keywords,
        ARRAY_AGG(DISTINCT ci.note) AS notes
    FROM 
        movie_keyword mk
    JOIN 
        movie_companies mc ON mk.movie_id = mc.movie_id
    LEFT JOIN 
        complete_cast cc ON cc.movie_id = mk.movie_id
    LEFT JOIN 
        movie_info mi ON mi.movie_id = mk.movie_id
    GROUP BY 
        mt.movie_id
)
SELECT 
    f.actor_name,
    f.movie_title,
    f.production_year,
    COALESCE(mi.keywords, 'No keywords available') AS keywords,
    COUNT(DISTINCT ci.id) AS total_cast_count,
    STRING_AGG(DISTINCT ci.note, '; ') AS cast_notes
FROM 
    FilteredTitles f
LEFT JOIN 
    cast_info ci ON ci.movie_id = f.movie_title
LEFT JOIN 
    MovieInfo mi ON mi.movie_id = f.movie_title
GROUP BY 
    f.actor_name, f.movie_title, f.production_year
ORDER BY 
    f.actor_name, f.production_year DESC;