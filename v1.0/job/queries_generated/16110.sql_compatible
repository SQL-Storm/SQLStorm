
SELECT 
    a.name AS actor_name,
    m.title AS movie_title,
    c.note AS character_name,
    m.production_year
FROM 
    cast_info ci
JOIN 
    aka_name a ON ci.person_id = a.person_id
JOIN 
    aka_title m ON ci.movie_id = m.movie_id
JOIN 
    char_name c ON c.imdb_id = a.id
WHERE 
    m.production_year >= 2000
GROUP BY 
    a.name, m.title, c.note, m.production_year
ORDER BY 
    m.production_year DESC;
