
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    c.kind AS cast_role,
    co.name AS company_name,
    k.keyword AS movie_keyword,
    m.info AS movie_info,
    COUNT(DISTINCT ca.id) AS cast_count
FROM 
    aka_name a
JOIN 
    cast_info ca ON a.person_id = ca.person_id
JOIN 
    aka_title t ON ca.movie_id = t.movie_id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name co ON mc.company_id = co.id
JOIN 
    movie_keyword mk ON t.id = mk.movie_id
JOIN 
    keyword k ON mk.keyword_id = k.id
JOIN 
    movie_info m ON t.id = m.movie_id
JOIN 
    info_type it ON m.info_type_id = it.id
WHERE 
    a.name IS NOT NULL 
    AND t.production_year BETWEEN 2000 AND 2022 
    AND co.country_code = 'USA'
GROUP BY 
    a.name, t.title, c.kind, co.name, k.keyword, m.info
ORDER BY 
    actor_name, movie_title;
