
WITH movie_actors AS (
    SELECT 
        a.name AS actor_name,
        t.title AS movie_title,
        t.production_year,
        c.note AS character_name,
        ROW_NUMBER() OVER (PARTITION BY t.id ORDER BY a.name) AS actor_rank
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    JOIN 
        aka_title t ON c.movie_id = t.movie_id
    WHERE 
        t.production_year >= 2000
),
movie_info_extended AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        STRING_AGG(DISTINCT mk.keyword, ', ') AS keywords,
        STRING_AGG(DISTINCT comp.name, ', ') AS companies,
        STRING_AGG(DISTINCT r.role, ', ') AS roles
    FROM 
        title m
    LEFT JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    LEFT JOIN 
        movie_companies mc ON m.id = mc.movie_id
    LEFT JOIN 
        company_name comp ON mc.company_id = comp.id
    LEFT JOIN 
        role_type r ON mc.company_type_id = r.id
    GROUP BY 
        m.id, m.title
)
SELECT 
    ma.actor_name,
    me.title,
    me.production_year,
    me.keywords,
    me.companies,
    ma.character_name,
    ma.actor_rank
FROM 
    movie_actors ma
JOIN 
    movie_info_extended me ON ma.movie_title = me.title
ORDER BY 
    me.production_year DESC, 
    ma.actor_rank;
