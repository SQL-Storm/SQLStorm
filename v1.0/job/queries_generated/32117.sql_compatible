
WITH RECURSIVE MovieHierarchy AS (
    SELECT m.id, m.title, m.production_year, 1 AS depth
    FROM aka_title AS m
    WHERE m.kind_id = (SELECT id FROM kind_type WHERE kind = 'movie')

    UNION ALL

    SELECT m.id, m.title, m.production_year, mh.depth + 1
    FROM aka_title AS m
    JOIN movie_link AS ml ON m.id = ml.linked_movie_id
    JOIN MovieHierarchy AS mh ON ml.movie_id = mh.id
)

SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    t.production_year,
    COUNT(DISTINCT cc.person_id) OVER (PARTITION BY t.id) AS unique_actors_count,
    STRING_AGG(DISTINCT k.keyword, ', ') AS keywords,
    COALESCE(NULLIF(mi.info, ''), 'No additional info') AS info
FROM 
    aka_name AS a
JOIN 
    cast_info AS ci ON a.person_id = ci.person_id
JOIN 
    MovieHierarchy AS t ON ci.movie_id = t.id
LEFT JOIN 
    movie_keyword AS mk ON t.id = mk.movie_id
LEFT JOIN 
    keyword AS k ON mk.keyword_id = k.id
LEFT JOIN 
    movie_info AS mi ON t.id = mi.movie_id AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'plot outline')
WHERE 
    a.name IS NOT NULL
    AND t.production_year > 2000
    AND (SELECT COUNT(*) FROM cast_info AS ci2 WHERE ci2.movie_id = t.id) > 5
GROUP BY 
    a.name, t.id, t.title, t.production_year, mi.info
ORDER BY 
    t.production_year DESC, unique_actors_count DESC;
