
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(ci.person_id) AS cast_count,
        STRING_AGG(DISTINCT ak.name ORDER BY ak.name) AS actors_names
    FROM 
        aka_title t
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    JOIN 
        cast_info ci ON cc.subject_id = ci.person_id
    JOIN 
        aka_name ak ON ci.person_id = ak.person_id
    GROUP BY 
        t.id, t.title, t.production_year
    ORDER BY 
        t.production_year DESC,
        cast_count DESC
    LIMIT 10
)

SELECT 
    rm.movie_id,
    rm.title,
    rm.production_year,
    rm.cast_count,
    STRING_AGG(DISTINCT ak.name, ', ') AS all_actor_names,
    mt.kind AS movie_kind,
    ARRAY_AGG(DISTINCT kw.keyword) AS keywords,
    STRING_AGG(DISTINCT pi.info, ', ') AS person_info
FROM 
    RankedMovies rm
JOIN 
    title mt ON rm.movie_id = mt.imdb_id
LEFT JOIN 
    movie_keyword mk ON rm.movie_id = mk.movie_id
LEFT JOIN 
    keyword kw ON mk.keyword_id = kw.id
LEFT JOIN 
    person_info pi ON pi.person_id IN (SELECT ci.person_id FROM cast_info ci WHERE ci.movie_id = rm.movie_id)
GROUP BY 
    rm.movie_id, rm.title, rm.production_year, rm.cast_count, mt.kind
ORDER BY 
    rm.production_year DESC;
