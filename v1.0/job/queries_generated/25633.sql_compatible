
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT cc.person_id) AS cast_count,
        ARRAY_AGG(DISTINCT ak.name) AS aka_names,
        STRING_AGG(DISTINCT kw.keyword, ', ') AS keywords
    FROM 
        aka_title AS t
    JOIN 
        complete_cast AS cc ON t.id = cc.movie_id
    JOIN 
        aka_name AS ak ON cc.subject_id = ak.person_id
    LEFT JOIN 
        movie_keyword AS mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword AS kw ON mk.keyword_id = kw.id
    GROUP BY 
        t.id, t.title, t.production_year
),
TopMovies AS (
    SELECT 
        movie_id,
        title,
        production_year,
        cast_count,
        aka_names,
        keywords,
        ROW_NUMBER() OVER (ORDER BY cast_count DESC, production_year DESC) AS rank
    FROM 
        RankedMovies
)
SELECT 
    tm.title,
    tm.production_year,
    tm.cast_count,
    tm.aka_names,
    tm.keywords,
    pi.info AS person_info
FROM 
    TopMovies AS tm
LEFT JOIN 
    person_info AS pi ON pi.person_id IN (
        SELECT DISTINCT cc.person_id 
        FROM complete_cast AS cc 
        WHERE cc.movie_id = tm.movie_id
    )
WHERE 
    tm.rank <= 10
ORDER BY 
    tm.rank;
