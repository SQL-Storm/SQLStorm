
WITH RECURSIVE title_hierarchy AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        t.episode_of_id,
        t.season_nr,
        t.episode_nr,
        1 AS depth
    FROM title t
    WHERE t.episode_of_id IS NULL
    
    UNION ALL

    SELECT 
        t2.id AS title_id,
        t2.title,
        t2.production_year,
        t2.episode_of_id,
        t2.season_nr,
        t2.episode_nr,
        th.depth + 1
    FROM title t2
    JOIN title_hierarchy th ON t2.episode_of_id = th.title_id
),
cast_info_with_names AS (
    SELECT 
        c.id AS cast_id,
        c.person_id,
        c.movie_id,
        c.note,
        c.nr_order,
        n.name AS person_name,
        ROW_NUMBER() OVER (PARTITION BY c.movie_id ORDER BY c.nr_order) AS role_rank
    FROM cast_info c
    JOIN aka_name n ON c.person_id = n.person_id
),
movies_with_keywords AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        ARRAY_AGG(k.keyword) AS keywords,
        COUNT(k.id) AS keyword_count
    FROM aka_title m
    LEFT JOIN movie_keyword mk ON m.id = mk.movie_id
    LEFT JOIN keyword k ON mk.keyword_id = k.id
    GROUP BY m.id, m.title
),
company_movie_info AS (
    SELECT 
        mc.movie_id,
        c.name AS company_name,
        c.country_code,
        ct.kind AS company_type,
        COUNT(DISTINCT mc.company_id) AS num_companies
    FROM movie_companies mc
    JOIN company_name c ON mc.company_id = c.id
    JOIN company_type ct ON mc.company_type_id = ct.id
    GROUP BY mc.movie_id, c.name, c.country_code, ct.kind
)
SELECT 
    th.title,
    th.production_year,
    cm.company_name,
    cm.company_type,
    mk.keywords,
    mk.keyword_count,
    COUNT(DISTINCT c.person_id) FILTER (WHERE c.role_rank < 3) AS top_roles_count,
    SUM(CASE WHEN c.note IS NOT NULL THEN 1 ELSE 0 END) AS notes_present
FROM title_hierarchy th
LEFT JOIN movies_with_keywords mk ON th.title_id = mk.movie_id
LEFT JOIN company_movie_info cm ON th.title_id = cm.movie_id
LEFT JOIN cast_info_with_names c ON th.title_id = c.movie_id
GROUP BY 
    th.title,
    th.production_year,
    cm.company_name,
    cm.company_type,
    mk.keywords,
    mk.keyword_count
HAVING 
    COUNT(DISTINCT c.person_id) >= 5
ORDER BY 
    th.production_year DESC, 
    th.title;
