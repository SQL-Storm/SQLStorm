
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        RANK() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS year_rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
), 
FilteredCast AS (
    SELECT 
        c.movie_id, 
        COUNT(DISTINCT c.person_id) AS actor_count
    FROM 
        cast_info c
    GROUP BY 
        c.movie_id
), 
MovieDetails AS (
    SELECT 
        m.movie_id,
        fc.actor_count,
        COALESCE(k.keyword, 'No Keywords') AS keyword,
        COUNT(mc.id) AS company_count
    FROM 
        FilteredCast fc
    JOIN 
        MovieDetails m ON fc.movie_id = m.movie_id
    LEFT JOIN 
        movie_keyword k ON fc.movie_id = k.movie_id
    LEFT JOIN 
        movie_companies mc ON fc.movie_id = mc.movie_id
    GROUP BY 
        m.movie_id, fc.actor_count, k.keyword
)
SELECT 
    rm.title,
    rm.production_year,
    COALESCE(fc.actor_count, 0) AS actor_count,
    md.keyword,
    md.company_count,
    CASE 
        WHEN md.company_count > 5 THEN 'Major Studio'
        WHEN md.company_count BETWEEN 1 AND 5 THEN 'Independent'
        ELSE 'No Studio'
    END AS studio_type
FROM 
    RankedMovies rm
LEFT JOIN
    FilteredCast fc ON rm.movie_id = fc.movie_id
LEFT JOIN 
    MovieDetails md ON rm.movie_id = md.movie_id
WHERE 
    rm.year_rank <= 5
ORDER BY 
    rm.production_year DESC, actor_count DESC
LIMIT 10;
