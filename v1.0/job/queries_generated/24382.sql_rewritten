WITH RECURSIVE movie_hierarchy AS (
    SELECT 
        mt.id AS movie_id,
        mt.title,
        mt.production_year,
        COALESCE(tc.title, 'Not a sequel') AS sequel_title,
        mt.kind_id,
        1 AS level
    FROM 
        aka_title mt
    LEFT JOIN 
        aka_title tc ON mt.episode_of_id = tc.id
    WHERE 
        mt.kind_id IN (SELECT id FROM kind_type WHERE kind IN ('movie', 'tvSeries'))
    
    UNION ALL

    SELECT 
        m.movie_id,
        m.title,
        m.production_year,
        COALESCE(t.title, 'Not a sequel') AS sequel_title,
        m.kind_id,
        level + 1
    FROM 
        complete_cast m
    JOIN 
        movie_hierarchy t ON m.movie_id = t.movie_id
    WHERE 
        m.status_id = 1
),
movie_rating AS (
    SELECT 
        mi.movie_id,
        AVG(CASE 
            WHEN mi.info_type_id = (SELECT id FROM info_type WHERE info = 'rating') 
            THEN CAST(mi.info AS FLOAT) 
            END) AS average_rating
    FROM 
        movie_info mi
    GROUP BY 
        mi.movie_id
),
high_rated_movies AS (
    SELECT 
        mh.movie_id,
        mh.title,
        mh.production_year,
        mh.sequel_title,
        mh.level,
        COALESCE(mr.average_rating, 0) AS average_rating
    FROM 
        movie_hierarchy mh
    LEFT JOIN 
        movie_rating mr ON mh.movie_id = mr.movie_id
    WHERE 
        mh.level < 3 
),
company_movies AS (
    SELECT 
        mc.movie_id,
        GROUP_CONCAT(cn.name) AS company_names
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        mc.movie_id
)
SELECT 
    h.title,
    h.production_year,
    h.sequel_title,
    h.average_rating,
    COALESCE(cm.company_names, 'No companies') AS companies
FROM 
    high_rated_movies h
LEFT JOIN 
    company_movies cm ON h.movie_id = cm.movie_id
WHERE 
    (h.average_rating IS NOT NULL OR h.average_rating = 0)
    AND (h.production_year BETWEEN 1990 AND 2023 OR h.sequel_title LIKE '%Part%')
ORDER BY 
    h.average_rating DESC NULLS LAST, 
    h.production_year DESC,
    h.title ASC
FETCH FIRST 50 ROWS ONLY;