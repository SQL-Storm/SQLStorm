
WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        tk.keyword,
        ROW_NUMBER() OVER (PARTITION BY t.id ORDER BY t.production_year DESC) AS rank
    FROM 
        title t
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword tk ON mk.keyword_id = tk.id
    WHERE 
        t.production_year >= 2000
),
actor_details AS (
    SELECT 
        ak.person_id,
        ak.name AS actor_name,
        COUNT(DISTINCT ci.movie_id) AS movie_count,
        STRING_AGG(DISTINCT m.title, ', ') AS movies
    FROM 
        aka_name ak
    JOIN 
        cast_info ci ON ak.person_id = ci.person_id
    JOIN 
        title m ON ci.movie_id = m.id
    GROUP BY 
        ak.person_id, ak.name
    HAVING 
        COUNT(DISTINCT ci.movie_id) > 5
),
company_info AS (
    SELECT 
        mc.movie_id,
        c.name AS company_name,
        ct.kind AS company_type,
        COUNT(DISTINCT mc.company_id) AS company_count
    FROM 
        movie_companies mc
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    GROUP BY 
        mc.movie_id, c.name, ct.kind
),
final_result AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        ad.actor_name,
        ci.company_name,
        ci.company_type,
        rm.keyword
    FROM 
        ranked_movies rm
    LEFT JOIN 
        actor_details ad ON rm.movie_id IN (SELECT ci.movie_id FROM cast_info ci WHERE ci.person_id = ad.person_id)
    LEFT JOIN 
        company_info ci ON rm.movie_id = ci.movie_id
    WHERE 
        rm.rank <= 5
)
SELECT 
    movie_id,
    title,
    production_year,
    actor_name,
    company_name,
    company_type,
    keyword
FROM 
    final_result
ORDER BY 
    production_year DESC, movie_id;
