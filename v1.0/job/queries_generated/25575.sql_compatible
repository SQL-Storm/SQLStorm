
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
TopMovies AS (
    SELECT 
        movie_id,
        title,
        production_year
    FROM 
        RankedMovies
    WHERE 
        rank <= 5  
),
ActorMovieInfo AS (
    SELECT 
        a.name AS actor_name,
        m.title AS movie_title,
        m.production_year,
        c.nr_order,
        r.role AS role_name
    FROM 
        cast_info c
    JOIN 
        aka_name a ON c.person_id = a.person_id
    JOIN 
        TopMovies m ON c.movie_id = m.movie_id
    JOIN 
        role_type r ON c.role_id = r.id
)
SELECT 
    ami.actor_name,
    ami.movie_title,
    ami.production_year,
    ami.role_name,
    COUNT(DISTINCT mi.info) AS info_count,
    STRING_AGG(DISTINCT mi.info, ', ') AS info_details
FROM 
    ActorMovieInfo ami
LEFT JOIN 
    movie_info mi ON ami.movie_title = mi.info AND ami.production_year = mi.note
GROUP BY 
    ami.actor_name, ami.movie_title, ami.production_year, ami.role_name
ORDER BY 
    ami.production_year DESC, 
    ami.actor_name ASC;
