
WITH RankedMovies AS (
    SELECT 
        title.id AS movie_id, 
        title.title AS movie_title, 
        title.production_year, 
        COUNT(DISTINCT cast_info.person_id) AS total_cast
    FROM 
        title
    JOIN 
        cast_info ON title.id = cast_info.movie_id
    GROUP BY 
        title.id, 
        title.title, 
        title.production_year
), 

TopMovies AS (
    SELECT 
        movie_id, 
        movie_title, 
        production_year, 
        total_cast,
        RANK() OVER (ORDER BY total_cast DESC) AS rank
    FROM 
        RankedMovies
    WHERE 
        production_year >= 2000
)

SELECT 
    tm.movie_id, 
    tm.movie_title, 
    tm.production_year, 
    tm.total_cast, 
    STRING_AGG(aka_name.name ORDER BY aka_name.name) AS aka_names,
    STRING_AGG(DISTINCT company_name.name ORDER BY company_name.name) AS production_companies,
    COUNT(DISTINCT movie_keyword.keyword_id) AS keyword_count
FROM 
    TopMovies tm
LEFT JOIN 
    movie_companies ON tm.movie_id = movie_companies.movie_id
LEFT JOIN 
    company_name ON movie_companies.company_id = company_name.id
LEFT JOIN 
    movie_keyword ON tm.movie_id = movie_keyword.movie_id
LEFT JOIN 
    aka_name ON tm.movie_id = aka_name.movie_id
WHERE 
    tm.rank <= 10
GROUP BY 
    tm.movie_id, 
    tm.movie_title, 
    tm.production_year, 
    tm.total_cast
ORDER BY 
    tm.total_cast DESC;
