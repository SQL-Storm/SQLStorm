
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    c.kind AS cast_type,
    STRING_AGG(DISTINCT k.keyword, ',') AS keywords,
    STRING_AGG(DISTINCT c2.name, ',') AS companies,
    m.production_year,
    p.info AS actor_info
FROM 
    aka_name AS a
JOIN 
    cast_info AS ci ON a.person_id = ci.person_id
JOIN 
    title AS t ON ci.movie_id = t.id
JOIN 
    comp_cast_type AS c ON ci.person_role_id = c.id
LEFT JOIN 
    movie_keyword AS mk ON t.id = mk.movie_id
LEFT JOIN 
    keyword AS k ON mk.keyword_id = k.id
JOIN 
    movie_companies AS mc ON t.id = mc.movie_id
JOIN 
    company_name AS c2 ON mc.company_id = c2.id
LEFT JOIN 
    movie_info AS m ON t.id = m.movie_id
LEFT JOIN 
    person_info AS p ON a.person_id = p.person_id
WHERE 
    t.production_year BETWEEN 2000 AND 2023
    AND k.keyword IS NOT NULL
GROUP BY 
    a.name, t.title, c.kind, m.production_year, p.info
ORDER BY 
    m.production_year DESC, a.name;
