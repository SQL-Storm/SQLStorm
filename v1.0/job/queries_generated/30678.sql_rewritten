WITH RECURSIVE MovieHierarchy AS (
    SELECT
        mt.id AS movie_id,
        mt.title,
        mt.production_year,
        1 AS level
    FROM
        aka_title mt
    WHERE
        mt.production_year >= 2000

    UNION ALL

    SELECT
        ml.linked_movie_id,
        m.title,
        m.production_year,
        mh.level + 1
    FROM
        movie_link ml
    JOIN
        aka_title m ON ml.movie_id = m.id
    JOIN
        MovieHierarchy mh ON ml.movie_id = mh.movie_id
),

TopMovies AS (
    SELECT
        mh.movie_id,
        mh.title,
        mh.production_year,
        COUNT(c.id) AS cast_count,
        RANK() OVER (PARTITION BY mh.production_year ORDER BY COUNT(c.id) DESC) AS rank
    FROM
        MovieHierarchy mh
    LEFT JOIN
        cast_info c ON mh.movie_id = c.movie_id
    GROUP BY
        mh.movie_id, mh.title, mh.production_year
),

FinalOutput AS (
    SELECT
        tm.title,
        tm.production_year,
        COALESCE(ak.name, 'Unknown') AS main_actor,
        tm.cast_count,
        ROW_NUMBER() OVER (ORDER BY tm.production_year DESC, tm.cast_count DESC) AS row_num
    FROM
        TopMovies tm
    LEFT JOIN
        cast_info ci ON tm.movie_id = ci.movie_id
    LEFT JOIN
        aka_name ak ON ci.person_id = ak.person_id
    WHERE
        tm.rank <= 5 
)

SELECT
    fo.title,
    fo.production_year,
    fo.main_actor,
    fo.cast_count
FROM
    FinalOutput fo
WHERE
    fo.row_num <= 20 
ORDER BY
    fo.production_year DESC, fo.cast_count DESC;