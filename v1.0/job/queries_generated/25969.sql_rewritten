WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title AS title,
        tc.kind AS movie_kind,
        t.production_year,
        COUNT(DISTINCT mc.company_id) AS production_companies,
        COUNT(DISTINCT mk.keyword_id) AS keywords_count,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT mc.company_id) DESC) AS rank
    FROM 
        aka_title t
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        kind_type tc ON t.kind_id = tc.id
    GROUP BY 
        t.id, t.title, tc.kind, t.production_year
),
movie_info AS (
    SELECT 
        m.movie_id,
        GROUP_CONCAT(DISTINCT mi.info ORDER BY mi.info_type_id) AS info_summary
    FROM 
        ranked_movies m
    LEFT JOIN 
        movie_info mi ON m.movie_id = mi.movie_id
    GROUP BY 
        m.movie_id
)
SELECT 
    rm.title,
    rm.movie_kind,
    rm.production_year,
    rm.production_companies,
    rm.keywords_count,
    mi.info_summary
FROM 
    ranked_movies rm
JOIN 
    movie_info mi ON rm.movie_id = mi.movie_id
WHERE 
    rm.rank <= 5
ORDER BY 
    rm.production_year DESC, 
    rm.production_companies DESC;