
WITH RankedMovies AS (
    SELECT 
        mt.title,
        mt.production_year,
        COUNT(cc.id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY mt.production_year ORDER BY COUNT(cc.id) DESC) AS rank
    FROM 
        aka_title mt
    LEFT JOIN 
        complete_cast cc ON mt.id = cc.movie_id
    WHERE 
        mt.production_year IS NOT NULL
    GROUP BY 
        mt.title, mt.production_year
), PopularNames AS (
    SELECT 
        an.name,
        COUNT(ci.person_id) AS appearance_count
    FROM 
        aka_name an
    JOIN 
        cast_info ci ON an.person_id = ci.person_id
    GROUP BY 
        an.id, an.name
    HAVING 
        COUNT(ci.person_id) > 1
), MovieKeywords AS (
    SELECT 
        mt.id AS movie_id,
        STRING_AGG(mk.keyword, ', ') AS keywords
    FROM 
        aka_title mt
    LEFT JOIN 
        movie_keyword mk ON mt.id = mk.movie_id
    GROUP BY 
        mt.id
)
SELECT 
    rm.title,
    rm.production_year,
    rm.cast_count,
    COALESCE(pn.name, 'No Popular Name') AS popular_name,
    COALESCE(mk.keywords, 'No Keywords') AS keyword_list
FROM 
    RankedMovies rm
LEFT JOIN 
    PopularNames pn ON rm.cast_count = pn.appearance_count 
LEFT JOIN 
    MovieKeywords mk ON rm.id = mk.movie_id
WHERE 
    rm.rank <= 5
ORDER BY 
    rm.production_year DESC, 
    rm.cast_count DESC;
