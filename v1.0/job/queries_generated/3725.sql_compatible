
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
ActorRoles AS (
    SELECT 
        c.person_id,
        ARRAY_AGG(DISTINCT rt.role) AS roles,
        COUNT(DISTINCT c.movie_id) AS movie_count
    FROM 
        cast_info c
    JOIN 
        role_type rt ON c.role_id = rt.id
    GROUP BY 
        c.person_id
),
MoviesWithCompanyInfo AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        ARRAY_AGG(DISTINCT cn.name) AS companies,
        COALESCE(SUM(CASE WHEN c.company_type_id = (SELECT id FROM company_type WHERE kind = 'Production') THEN 1 ELSE 0 END), 0) AS production_count
    FROM 
        movie_companies mc
    JOIN 
        aka_title m ON mc.movie_id = m.id
    JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        m.id, m.title
)
SELECT 
    R.movie_id,
    R.title,
    R.production_year,
    COALESCE(AR.roles, ARRAY[]::TEXT[]) AS roles, 
    M.companies,
    M.production_count
FROM 
    RankedMovies R
LEFT JOIN 
    ActorRoles AR ON AR.person_id IN (
        SELECT 
            c.person_id 
        FROM 
            cast_info c 
        WHERE 
            c.movie_id = R.movie_id
    )
LEFT JOIN 
    MoviesWithCompanyInfo M ON M.movie_id = R.movie_id
WHERE 
    R.title_rank <= 5
ORDER BY 
    R.production_year DESC, 
    R.title;
