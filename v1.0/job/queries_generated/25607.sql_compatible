
WITH movie_details AS (
    SELECT 
        t.id AS movie_id,
        t.title AS movie_title,
        t.production_year,
        STRING_AGG(DISTINCT c.name, ', ') AS cast_names,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords,
        STRING_AGG(DISTINCT cn.name, ', ') AS companies,
        info.info
    FROM 
        title t
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    JOIN 
        cast_info ci ON cc.subject_id = ci.person_id
    JOIN 
        aka_name an ON ci.person_id = an.person_id
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        movie_companies mc ON t.id = mc.movie_id
    LEFT JOIN 
        company_name cn ON mc.company_id = cn.id
    LEFT JOIN 
        movie_info info ON t.id = info.movie_id
    GROUP BY 
        t.id, t.title, t.production_year, info.info
),
ranked_movies AS (
    SELECT 
        md.*,
        RANK() OVER (PARTITION BY production_year ORDER BY COUNT(DISTINCT ci.person_id) DESC) AS rank_by_cast_size
    FROM 
        movie_details md
    JOIN 
        complete_cast cc ON md.movie_id = cc.movie_id
    JOIN 
        cast_info ci ON cc.subject_id = ci.person_id
)
SELECT 
    movie_id,
    movie_title,
    production_year,
    cast_names,
    keywords,
    companies,
    info,
    rank_by_cast_size
FROM 
    ranked_movies
WHERE 
    rank_by_cast_size <= 10
ORDER BY 
    production_year DESC, rank_by_cast_size;
