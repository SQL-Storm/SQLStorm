
SELECT 
    a.name AS actor_name, 
    t.title AS movie_title, 
    c.kind AS character_role, 
    m.company_id AS production_company_id, 
    m.note AS company_note 
FROM 
    aka_name a 
JOIN 
    cast_info c ON a.person_id = c.person_id 
JOIN 
    aka_title t ON c.movie_id = t.movie_id 
JOIN 
    movie_companies m ON t.movie_id = m.movie_id 
WHERE 
    a.name IS NOT NULL 
    AND t.title IS NOT NULL 
    AND c.nr_order <= 5 
GROUP BY 
    a.name, t.title, c.kind, m.company_id, m.note 
ORDER BY 
    a.name, t.production_year DESC;
