
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS rank_per_year
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
TopMovies AS (
    SELECT 
        movie_id, title, production_year 
    FROM 
        RankedMovies 
    WHERE 
        rank_per_year <= 10
),
MovieDetails AS (
    SELECT 
        tm.movie_id,
        tm.title,
        tm.production_year,
        COALESCE(COUNT(DISTINCT c.person_id)::TEXT, '0') AS total_cast,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords,
        AVG((SELECT mr.rating FROM movie_info mi JOIN movie_rating mr ON mi.movie_id = mr.movie_id WHERE mi.movie_id = tm.movie_id AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'rating'))) AS avg_rating
    FROM 
        TopMovies tm
    LEFT JOIN 
        cast_info c ON tm.movie_id = c.movie_id
    LEFT JOIN 
        movie_keyword mk ON tm.movie_id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        tm.movie_id, tm.title, tm.production_year
),
LastMovieData AS (
    SELECT 
        md.*,
        DENSE_RANK() OVER (ORDER BY md.production_year DESC) AS dense_rank
    FROM 
        MovieDetails md
    WHERE 
        md.production_year = (SELECT MAX(production_year) FROM TopMovies)
),
CompanyRoles AS (
    SELECT 
        mc.movie_id,
        cm.name AS company_name,
        ct.kind AS company_type,
        COUNT(DISTINCT ci.person_id) AS associated_cast_count
    FROM 
        movie_companies mc
    JOIN 
        company_name cm ON mc.company_id = cm.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    JOIN 
        cast_info ci ON mc.movie_id = ci.movie_id
    GROUP BY 
        mc.movie_id, cm.name, ct.kind
)
SELECT 
    lm.title,
    lm.production_year,
    lm.total_cast,
    lm.keywords,
    lm.avg_rating,
    cr.company_name,
    cr.company_type,
    cr.associated_cast_count
FROM 
    LastMovieData lm
LEFT JOIN 
    CompanyRoles cr ON lm.movie_id = cr.movie_id
WHERE 
    lm.total_cast > '0'
ORDER BY 
    lm.production_year DESC, lm.avg_rating DESC, cr.associated_cast_count DESC
LIMIT 20;
