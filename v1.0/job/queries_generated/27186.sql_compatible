
WITH movie_data AS (
    SELECT 
        a.id AS aka_id,
        a.name AS aka_name,
        t.title AS movie_title,
        t.production_year,
        c.company_name,
        p.info AS person_info,
        k.keyword AS movie_keyword,
        COUNT(DISTINCT ca.id) AS cast_count
    FROM 
        aka_name a
    JOIN 
        cast_info ca ON a.person_id = ca.person_id
    JOIN 
        title t ON ca.movie_id = t.id
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        person_info p ON a.person_id = p.person_id
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        t.production_year BETWEEN 2000 AND 2020
        AND a.name IS NOT NULL
        AND c.country_code = 'USA'
        AND p.info_type_id = (SELECT id FROM info_type WHERE info = 'biography')
    GROUP BY 
        a.id, a.name, t.title, t.production_year, c.company_name, p.info, k.keyword
),
ranked_movies AS (
    SELECT 
        aka_id,
        aka_name,
        movie_title,
        production_year,
        company_name,
        person_info,
        movie_keyword,
        cast_count,
        RANK() OVER (PARTITION BY production_year ORDER BY cast_count DESC) AS rank
    FROM 
        movie_data
)
SELECT 
    aka_id,
    aka_name,
    movie_title,
    production_year,
    company_name,
    person_info,
    movie_keyword,
    cast_count
FROM 
    ranked_movies
WHERE 
    rank <= 5
ORDER BY 
    production_year, rank;
