WITH ranked_titles AS (
    SELECT 
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank,
        COUNT(*) OVER (PARTITION BY t.production_year) AS year_title_count
    FROM 
        aka_title t
),

high_cast_count_movies AS (
    SELECT 
        mc.movie_id,
        COUNT(ci.person_id) AS cast_count
    FROM 
        movie_companies mc
    LEFT JOIN 
        cast_info ci ON mc.movie_id = ci.movie_id
    GROUP BY 
        mc.movie_id
    HAVING 
        COUNT(ci.person_id) > 5
),

movie_info_ext AS (
    SELECT 
        mi.movie_id,
        STRING_AGG(DISTINCT mi.info, ', ') AS combined_info,
        COUNT(DISTINCT mi.note) FILTER (WHERE mi.note IS NOT NULL) AS non_null_note_count
    FROM 
        movie_info mi
    GROUP BY 
        mi.movie_id
)

SELECT 
    r.title,
    r.production_year,
    r.title_rank,
    COALESCE(h.cast_count, 0) AS total_cast_count,
    COALESCE(mie.combined_info, 'No additional info') AS additional_info,
    mie.non_null_note_count
FROM 
    ranked_titles r
LEFT JOIN 
    high_cast_count_movies h ON r.production_year = (SELECT production_year FROM aka_title WHERE id = h.movie_id)
LEFT JOIN 
    movie_info_ext mie ON mie.movie_id = (SELECT movie_id FROM movie_info WHERE info_type_id = 1 LIMIT 1 OFFSET r.title_rank - 1)
WHERE 
    r.year_title_count > 5 
    AND r.production_year IS NOT NULL
ORDER BY 
    r.production_year DESC,
    r.title_rank ASC;