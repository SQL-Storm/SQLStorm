
WITH MovieDetails AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        c.name AS company_name,
        r.role,
        a.name AS actor_name
    FROM 
        title t
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    JOIN 
        cast_info ci ON cc.subject_id = ci.id
    JOIN 
        role_type r ON ci.role_id = r.id
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    WHERE 
        t.production_year >= 2000
        AND c.country_code = 'USA'
),
KeywordStats AS (
    SELECT 
        movie_id,
        COUNT(mk.keyword_id) AS keyword_count
    FROM 
        movie_keyword mk
    GROUP BY 
        movie_id
),
InfoStats AS (
    SELECT 
        movie_id,
        COUNT(mi.info_type_id) AS info_count
    FROM 
        movie_info mi
    GROUP BY 
        movie_id
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    md.company_name,
    COUNT(DISTINCT md.actor_name) AS actor_count,
    COALESCE(ks.keyword_count, 0) AS keyword_count,
    COALESCE(is.info_count, 0) AS info_count
FROM 
    MovieDetails md
LEFT JOIN 
    KeywordStats ks ON md.movie_id = ks.movie_id
LEFT JOIN 
    InfoStats is ON md.movie_id = is.movie_id
GROUP BY 
    md.movie_id, md.title, md.production_year, md.company_name, ks.keyword_count, is.info_count
ORDER BY 
    md.production_year DESC, actor_count DESC;
