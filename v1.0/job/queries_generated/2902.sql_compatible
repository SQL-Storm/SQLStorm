
WITH RankedMovies AS (
    SELECT 
        t.title, 
        t.production_year,
        COUNT(DISTINCT mc.company_id) AS company_count,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT mc.company_id) DESC) AS rank
    FROM 
        aka_title t
    LEFT JOIN 
        movie_companies mc ON t.id = mc.movie_id
    GROUP BY 
        t.title, t.production_year
),
ActorsWithMostRoles AS (
    SELECT 
        a.name,
        COUNT(ci.movie_id) AS role_count
    FROM 
        aka_name a
    JOIN 
        cast_info ci ON a.person_id = ci.person_id
    GROUP BY 
        a.name
    HAVING 
        COUNT(ci.movie_id) > 5
),
MovieKeywords AS (
    SELECT 
        m.title,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        aka_title m
    INNER JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    INNER JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        m.title
)
SELECT 
    r.title,
    r.production_year,
    r.company_count,
    ak.name AS actor_name,
    ak.role_count,
    mk.keywords
FROM 
    RankedMovies r
LEFT JOIN 
    ActorsWithMostRoles ak ON r.rank = 1
LEFT JOIN 
    MovieKeywords mk ON r.title = mk.title
WHERE 
    r.production_year IS NOT NULL
    AND r.company_count IS NOT NULL
ORDER BY 
    r.production_year DESC, 
    ak.role_count DESC;
