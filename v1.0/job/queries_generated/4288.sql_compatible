
WITH RankedMovies AS (
    SELECT 
        t.title,
        t.production_year,
        COUNT(c.person_id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(c.person_id) DESC) AS rn
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    WHERE 
        t.kind_id IN (SELECT id FROM kind_type WHERE kind IN ('movie', 'tv_movie'))
    GROUP BY 
        t.id, t.title, t.production_year
),
TopMovies AS (
    SELECT 
        title, 
        production_year 
    FROM 
        RankedMovies 
    WHERE 
        rn <= 5
),
MoviesWithKeywords AS (
    SELECT 
        t.title,
        k.keyword,
        t.production_year
    FROM 
        TopMovies t
    LEFT JOIN 
        movie_keyword mk ON t.title = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
),
FinalResult AS (
    SELECT 
        m.title, 
        m.production_year,
        COALESCE(GROUP_CONCAT(DISTINCT k.keyword SEPARATOR ', '), 'No keywords') AS keywords
    FROM 
        MoviesWithKeywords m
    GROUP BY 
        m.title, m.production_year
)
SELECT 
    f.title,
    f.production_year,
    f.keywords
FROM 
    FinalResult f
WHERE 
    f.production_year IS NOT NULL
ORDER BY 
    f.production_year DESC, 
    f.title;
