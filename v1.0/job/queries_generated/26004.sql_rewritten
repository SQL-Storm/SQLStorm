SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    t.production_year,
    STRING_AGG(DISTINCT k.keyword, ', ') AS keywords,
    GROUP_CONCAT(DISTINCT c.kind ORDER BY c.kind) AS company_types,
    STRING_AGG(DISTINCT pi.info, '; ') AS person_info,
    COUNT(DISTINCT m.movie_id) AS total_movies,
    SUM(CASE WHEN t.production_year > 2000 THEN 1 ELSE 0 END) AS recent_movies_count
FROM 
    aka_name a
JOIN 
    cast_info ci ON a.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
LEFT JOIN 
    movie_keyword mk ON t.id = mk.movie_id
LEFT JOIN 
    keyword k ON mk.keyword_id = k.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_type c ON mc.company_type_id = c.id
LEFT JOIN 
    person_info pi ON a.person_id = pi.person_id
WHERE 
    a.name LIKE '%Smith%' 
GROUP BY 
    a.name, t.title, t.production_year
ORDER BY 
    total_movies DESC, actor_name ASC;