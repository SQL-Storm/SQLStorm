WITH RECURSIVE movie_hierarchy AS (
    SELECT 
        mt.id AS movie_id,
        mt.title,
        mt.production_year,
        1 AS level
    FROM 
        aka_title mt
    WHERE 
        mt.kind_id = (SELECT id FROM kind_type WHERE kind = 'movie')
    
    UNION ALL

    SELECT 
        ml.linked_movie_id AS movie_id,
        at.title,
        at.production_year,
        mh.level + 1
    FROM 
        movie_link ml
    JOIN 
        aka_title at ON ml.linked_movie_id = at.id
    JOIN 
        movie_hierarchy mh ON ml.movie_id = mh.movie_id
    WHERE 
        mh.level < 3  
),

actor_movie_counts AS (
    SELECT 
        a.id AS actor_id,
        ak.name,
        COUNT(DISTINCT ci.movie_id) AS movie_count
    FROM 
        cast_info ci
    JOIN 
        aka_name ak ON ci.person_id = ak.person_id
    JOIN 
        aka_title mt ON ci.movie_id = mt.id
    WHERE 
        ci.nr_order = 1  
    GROUP BY 
        a.id, ak.name
),

movie_keywords AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
),

movie_details AS (
    SELECT 
        mh.movie_id,
        mh.title,
        mh.production_year,
        COALESCE(ak.name, 'Unknown') AS actor_name,
        COALESCE(mkc.keywords, 'No Keywords') AS keywords,
        ROW_NUMBER() OVER (PARTITION BY mh.movie_id ORDER BY mh.level DESC) AS rn
    FROM 
        movie_hierarchy mh
    LEFT JOIN 
        actor_movie_counts ak ON ak.movie_count > 0
    LEFT JOIN 
        movie_keywords mkc ON mh.movie_id = mkc.movie_id
    WHERE 
        mh.production_year > 2000
),

final_results AS (
    SELECT
        md.movie_id,
        md.title,
        md.production_year,
        md.actor_name,
        md.keywords
    FROM 
        movie_details md
    WHERE 
        md.rn = 1
)
SELECT 
    f.movie_id,
    f.title,
    f.production_year,
    f.actor_name,
    f.keywords
FROM 
    final_results f
ORDER BY 
    f.production_year DESC, 
    f.title;