
WITH RankedMovies AS (
    SELECT 
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(c.person_id) DESC) AS rank_order
    FROM 
        aka_title t
    LEFT JOIN 
        complete_cast cc ON t.id = cc.movie_id
    LEFT JOIN 
        cast_info c ON cc.subject_id = c.id
    GROUP BY 
        t.id, t.title, t.production_year
),
MovieDetails AS (
    SELECT 
        t.title,
        t.production_year,
        COUNT(DISTINCT mcc.company_id) AS production_companies,
        COUNT(DISTINCT mk.keyword) AS keywords
    FROM 
        aka_title t
    LEFT JOIN 
        complete_cast cc ON t.id = cc.movie_id
    LEFT JOIN 
        movie_companies mcc ON t.id = mcc.movie_id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    GROUP BY 
        t.id, t.title, t.production_year
)
SELECT 
    rm.title,
    rm.production_year,
    md.production_companies,
    md.keywords,
    CASE 
        WHEN md.production_companies IS NULL OR md.production_companies = 0 THEN 'No Companies'
        ELSE 'Has Companies'
    END AS company_status,
    COALESCE(md.keywords, 0) AS keyword_count,
    AVG(CASE WHEN rm.production_year > 2000 THEN 1 ELSE 0 END) OVER () AS post_2000_ratio
FROM 
    RankedMovies rm
JOIN 
    MovieDetails md ON rm.title = md.title AND rm.production_year = md.production_year
WHERE 
    rm.rank_order <= 5 
ORDER BY 
    rm.production_year DESC, rm.rank_order;
