
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS year_rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
PopularTitles AS (
    SELECT 
        k.keyword,
        COUNT(mk.movie_id) AS keyword_count
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        k.keyword
    ORDER BY 
        keyword_count DESC
    LIMIT 10
),
CompanyDetails AS (
    SELECT 
        mc.movie_id,
        c.name AS company_name,
        ct.kind AS company_type
    FROM 
        movie_companies mc
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
),
ActorRoles AS (
    SELECT 
        a.name AS actor_name,
        COUNT(ci.movie_id) AS roles_count
    FROM 
        aka_name a
    JOIN 
        cast_info ci ON a.person_id = ci.person_id
    GROUP BY 
        a.name
    HAVING 
        COUNT(ci.movie_id) > 1
    ORDER BY 
        roles_count DESC
    LIMIT 5
)
SELECT 
    rm.title,
    rm.production_year,
    COUNT(DISTINCT cd.company_name) AS total_companies,
    STRING_AGG(DISTINCT at.actor_name, ', ') AS top_actors,
    STRING_AGG(DISTINCT pt.keyword, ', ') AS used_keywords
FROM 
    RankedMovies rm
LEFT JOIN 
    CompanyDetails cd ON rm.movie_id = cd.movie_id
LEFT JOIN 
    cast_info ci ON rm.movie_id = ci.movie_id
LEFT JOIN 
    aka_name at ON ci.person_id = at.person_id
LEFT JOIN 
    PopularTitles pt ON rm.title LIKE '%' || pt.keyword || '%'
WHERE 
    rm.year_rank <= 5
GROUP BY 
    rm.title, rm.production_year
ORDER BY 
    rm.production_year DESC, total_companies DESC;
