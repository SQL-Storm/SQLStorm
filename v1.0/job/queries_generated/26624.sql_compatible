
SELECT 
    a.name AS aka_name,
    t.title AS movie_title,
    c.nr_order AS cast_order,
    pi.gender AS actor_gender,
    co.name AS company_name,
    k.keyword AS movie_keyword,
    rt.role AS role_type,
    STRING_AGG(DISTINCT mi.info ORDER BY mi.info_type_id) AS movie_info,
    COUNT(DISTINCT a2.id) AS other_alias_count
FROM 
    aka_name a
JOIN 
    cast_info c ON a.person_id = c.person_id
JOIN 
    title t ON c.movie_id = t.id
JOIN 
    company_name co ON co.id IN (
        SELECT mc.company_id 
        FROM movie_companies mc 
        WHERE mc.movie_id = t.id
    )
JOIN 
    movie_keyword mk ON mk.movie_id = t.id
JOIN 
    keyword k ON k.id = mk.keyword_id
JOIN 
    person_info pi ON pi.person_id = a.person_id
JOIN 
    role_type rt ON rt.id = c.role_id
LEFT JOIN 
    aka_name a2 ON a2.person_id = a.person_id AND a2.id <> a.id
LEFT JOIN 
    movie_info mi ON mi.movie_id = t.id
WHERE 
    t.production_year >= 2000 
    AND a.name IS NOT NULL 
    AND k.keyword IS NOT NULL
GROUP BY 
    a.name, t.title, c.nr_order, pi.gender, co.name, k.keyword, rt.role
ORDER BY 
    t.production_year DESC, a.name;
