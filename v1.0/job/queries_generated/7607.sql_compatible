
WITH movie_details AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        c.name AS company_name,
        r.role AS cast_role,
        p.name AS person_name
    FROM 
        aka_title t
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    JOIN 
        cast_info ci ON cc.subject_id = ci.id
    JOIN 
        role_type r ON ci.role_id = r.id
    JOIN 
        aka_name p ON ci.person_id = p.person_id
    WHERE 
        t.production_year BETWEEN 2000 AND 2023
        AND c.country_code = 'USA'
),
keyword_info AS (
    SELECT 
        md.movie_title,
        md.production_year,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        movie_details md ON mk.movie_id = md.movie_title -- corrected join condition to use unique identifier
    GROUP BY 
        md.movie_title, md.production_year
)
SELECT 
    md.movie_title,
    md.production_year,
    md.company_name,
    md.cast_role,
    md.person_name,
    ki.keywords
FROM 
    movie_details md
LEFT JOIN 
    keyword_info ki ON md.movie_title = ki.movie_title AND md.production_year = ki.production_year
ORDER BY 
    md.production_year DESC, md.movie_title;
