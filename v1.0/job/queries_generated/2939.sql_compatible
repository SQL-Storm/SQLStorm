
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id, 
        t.title, 
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
), 
MovieDetails AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        STRING_AGG(DISTINCT cn.name ORDER BY cn.name) AS companies,
        COUNT(DISTINCT kc.keyword) AS keyword_count,
        SUM(CASE WHEN ci.role_id IS NOT NULL THEN 1 ELSE 0 END) AS cast_count
    FROM 
        RankedMovies rm
    LEFT JOIN 
        movie_companies mc ON rm.movie_id = mc.movie_id
    LEFT JOIN 
        company_name cn ON mc.company_id = cn.id
    LEFT JOIN 
        movie_keyword mk ON rm.movie_id = mk.movie_id
    LEFT JOIN 
        keyword kc ON mk.keyword_id = kc.id
    LEFT JOIN 
        complete_cast cc ON rm.movie_id = cc.movie_id
    LEFT JOIN 
        cast_info ci ON cc.subject_id = ci.person_id
    GROUP BY 
        rm.movie_id, rm.title, rm.production_year
)

SELECT 
    md.movie_id, 
    md.title, 
    md.production_year, 
    md.companies,
    md.keyword_count,
    md.cast_count,
    CASE 
        WHEN md.production_year BETWEEN 2000 AND 2010 THEN '2000s' 
        WHEN md.production_year > 2010 THEN '2010s and beyond'
        ELSE 'Before 2000'
    END AS era
FROM 
    MovieDetails md
WHERE 
    md.cast_count > 5
ORDER BY 
    md.production_year DESC, 
    md.title;
