
WITH RankedMovies AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        a.name AS actor_name,
        ROW_NUMBER() OVER (PARTITION BY t.id ORDER BY t.production_year DESC) AS rn
    FROM 
        aka_title t
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    WHERE 
        k.keyword LIKE '%action%'
), MovieCompanyInfo AS (
    SELECT 
        r.movie_title,
        r.production_year,
        c.name AS company_name,
        ct.kind AS company_type
    FROM 
        RankedMovies r
    JOIN 
        movie_companies mc ON r.movie_title = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
), MovieInfoAggregated AS (
    SELECT 
        m.movie_title,
        m.production_year,
        STRING_AGG(m.company_name, ', ') AS companies,
        STRING_AGG(m.company_type, ', ') AS types
    FROM 
        MovieCompanyInfo m
    GROUP BY 
        m.movie_title, m.production_year
)
SELECT 
    mi.movie_title,
    mi.production_year,
    mi.companies,
    mi.types
FROM 
    MovieInfoAggregated mi
WHERE 
    mi.production_year >= 2000
ORDER BY 
    mi.production_year DESC, mi.movie_title;
