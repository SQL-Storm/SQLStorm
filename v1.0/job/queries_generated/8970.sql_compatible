
SELECT 
    a.name AS actor_name, 
    t.title AS movie_title, 
    c.kind AS role_type, 
    c.nr_order AS cast_order, 
    COALESCE(m.info, 'No info available') AS movie_info, 
    STRING_AGG(DISTINCT k.keyword, ', ') AS keywords 
FROM 
    aka_name a 
JOIN 
    cast_info c ON a.person_id = c.person_id 
JOIN 
    aka_title t ON c.movie_id = t.movie_id 
JOIN 
    movie_info m ON t.movie_id = m.movie_id 
JOIN 
    keyword k ON t.id = k.movie_id 
WHERE 
    a.name ILIKE '%John%' 
    AND t.production_year BETWEEN 2000 AND 2023 
    AND c.nr_order IS NOT NULL 
GROUP BY 
    a.name, t.title, c.kind, c.nr_order, m.info 
ORDER BY 
    MAX(t.production_year) DESC, c.nr_order;
