
WITH MovieDetails AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        c.name AS company_name,
        ki.kind AS movie_kind,
        STRING_AGG(DISTINCT ak.name, ', ') AS aka_names,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords
    FROM 
        title t
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        kind_type ki ON mc.company_type_id = ki.id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        aka_title ak ON ak.movie_id = t.id
    GROUP BY 
        t.id, t.title, t.production_year, c.name, ki.kind
),
PersonRoles AS (
    SELECT 
        ci.movie_id,
        p.id AS person_id,
        p.name AS person_name,
        rt.role AS role,
        ci.nr_order
    FROM 
        cast_info ci
    JOIN 
        aka_name p ON ci.person_id = p.person_id
    JOIN 
        role_type rt ON ci.role_id = rt.id
),
CompleteFilmography AS (
    SELECT 
        md.movie_title,
        md.production_year,
        md.company_name,
        md.movie_kind,
        md.aka_names,
        md.keywords,
        pr.person_name,
        pr.role,
        pr.nr_order
    FROM 
        MovieDetails md
    LEFT JOIN 
        PersonRoles pr ON md.movie_title = pr.movie_id
)
SELECT 
    movie_title,
    production_year,
    company_name,
    movie_kind,
    aka_names,
    keywords,
    person_name,
    role,
    nr_order
FROM 
    CompleteFilmography
WHERE 
    production_year IS NOT NULL
ORDER BY 
    production_year DESC, 
    movie_title ASC, 
    role;
