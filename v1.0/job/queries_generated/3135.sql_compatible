
WITH movie_years AS (
    SELECT 
        title.id AS movie_id, 
        title.title AS movie_title, 
        title.production_year,
        COUNT(DISTINCT cast_info.person_id) AS num_cast_members
    FROM 
        title
    LEFT JOIN 
        cast_info ON title.id = cast_info.movie_id
    WHERE 
        title.production_year IS NOT NULL
    GROUP BY 
        title.id, title.title, title.production_year
),
top_movies AS (
    SELECT 
        movie_id, 
        movie_title, 
        production_year, 
        num_cast_members,
        RANK() OVER (PARTITION BY production_year ORDER BY num_cast_members DESC) AS rank
    FROM 
        movie_years
),
movie_details AS (
    SELECT 
        tm.movie_id,
        tm.movie_title,
        tm.production_year,
        tm.num_cast_members,
        ak.name AS main_actor_name,
        ak.person_id AS main_actor_id,
        mk.keyword AS movie_keyword
    FROM 
        top_movies tm
    LEFT JOIN 
        cast_info ci ON tm.movie_id = ci.movie_id AND ci.nr_order = 1
    LEFT JOIN 
        aka_name ak ON ci.person_id = ak.person_id
    LEFT JOIN 
        movie_keyword mk ON tm.movie_id = mk.movie_id
    WHERE 
        tm.rank <= 5
)
SELECT 
    md.movie_title,
    md.production_year,
    md.num_cast_members,
    COALESCE(md.main_actor_name, 'Unknown Actor') AS main_actor_name,
    STRING_AGG(DISTINCT md.movie_keyword, ', ') AS keywords
FROM 
    movie_details md
GROUP BY 
    md.movie_title, md.production_year, md.num_cast_members, md.main_actor_name
ORDER BY 
    md.production_year DESC, md.num_cast_members DESC;
