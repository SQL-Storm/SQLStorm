
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY tk.keyword) AS rank_by_keyword
    FROM 
        aka_title t
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword tk ON mk.keyword_id = tk.id
),
ActorRoles AS (
    SELECT 
        c.movie_id,
        COUNT(DISTINCT ci.person_id) AS total_actors,
        STRING_AGG(DISTINCT a.name, ', ') AS actor_names
    FROM 
        cast_info c
    JOIN 
        aka_name a ON c.person_id = a.person_id
    GROUP BY 
        c.movie_id
),
MoviesWithActors AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        COALESCE(ar.total_actors, 0) AS total_actors,
        ar.actor_names,
        rm.rank_by_keyword
    FROM 
        RankedMovies rm
    LEFT JOIN 
        ActorRoles ar ON rm.movie_id = ar.movie_id
),
TopMovies AS (
    SELECT 
        m.* 
    FROM 
        MoviesWithActors m
    WHERE 
        m.rank_by_keyword <= 5 AND m.total_actors > 3
)

SELECT 
    tm.title,
    tm.production_year,
    tm.total_actors,
    CASE 
        WHEN LENGTH(tm.actor_names) > 50 THEN CONCAT(SUBSTRING(tm.actor_names, 1, 47), '...')
        ELSE tm.actor_names
    END AS actor_names
FROM 
    TopMovies tm
ORDER BY 
    tm.production_year DESC, 
    tm.total_actors DESC;
