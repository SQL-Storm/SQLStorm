
WITH MovieDetails AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        ak.name AS actor_name,
        r.role AS role
    FROM 
        title t
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        aka_name ak ON ci.person_id = ak.person_id
    JOIN 
        role_type r ON ci.role_id = r.id
    WHERE 
        t.production_year >= 2000
),
CompanyDetails AS (
    SELECT 
        m.movie_id,
        c.name AS company_name,
        ct.kind AS company_type
    FROM 
        movie_companies m
    JOIN 
        company_name c ON m.company_id = c.id
    JOIN 
        company_type ct ON m.company_type_id = ct.id
),
KeywordDetails AS (
    SELECT 
        mk.movie_id,
        k.keyword
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
)
SELECT 
    md.movie_title,
    md.production_year,
    ARRAY_AGG(DISTINCT md.actor_name) AS actors,
    ARRAY_AGG(DISTINCT cd.company_name) AS production_companies,
    ARRAY_AGG(DISTINCT cd.company_type) AS company_types,
    ARRAY_AGG(DISTINCT kd.keyword) AS keywords
FROM 
    MovieDetails md
LEFT JOIN 
    CompanyDetails cd ON md.movie_title = cd.movie_id
LEFT JOIN 
    KeywordDetails kd ON md.movie_title = kd.movie_id
GROUP BY 
    md.movie_title, md.production_year
ORDER BY 
    md.production_year DESC, md.movie_title;
