WITH RankedMovies AS (
    SELECT 
        t.title,
        t.production_year,
        t.kind_id,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC, t.title) AS rn,
        COUNT(DISTINCT k.id) OVER (PARTITION BY t.id) AS keyword_count
    FROM 
        aka_title AS t
    LEFT JOIN 
        movie_keyword AS mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword AS k ON mk.keyword_id = k.id
    WHERE 
        t.production_year IS NOT NULL
),
TopMovies AS (
    SELECT 
        title, 
        production_year,
        keyword_count
    FROM 
        RankedMovies
    WHERE 
        rn <= 3 
),
MovieCompanies AS (
    SELECT 
        mc.movie_id, 
        c.name AS company_name, 
        ct.kind AS company_type,
        COUNT(CASE WHEN c.country_code IS NULL THEN 1 END) AS null_country_count
    FROM 
        movie_companies AS mc
    JOIN 
        company_name AS c ON mc.company_id = c.id
    JOIN 
        company_type AS ct ON mc.company_type_id = ct.id
    GROUP BY 
        mc.movie_id, c.name, ct.kind
),
FinalResult AS (
    SELECT 
        tm.title,
        tm.production_year,
        mc.company_name,
        mc.company_type,
        tm.keyword_count,
        COALESCE(mc.null_country_count, 0) AS null_country_count
    FROM 
        TopMovies AS tm
    LEFT JOIN 
        MovieCompanies AS mc ON tm.title = (
            SELECT 
                t.title
            FROM 
                aka_title AS t
            WHERE 
                t.production_year = tm.production_year
            LIMIT 1
        )
)
SELECT 
    title,
    production_year,
    company_name,
    company_type,
    keyword_count,
    null_country_count
FROM 
    FinalResult
WHERE 
    keyword_count > 0
ORDER BY 
    production_year DESC, title ASC;