
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),

MovieDetails AS (
    SELECT 
        m.movie_id,
        MAX(CASE WHEN mi.info_type_id = 1 THEN mi.info END) AS director,
        COUNT(DISTINCT mc.company_id) AS company_count
    FROM 
        complete_cast m 
    LEFT JOIN 
        movie_info mi ON m.movie_id = mi.movie_id
    LEFT JOIN 
        movie_companies mc ON m.movie_id = mc.movie_id
    GROUP BY 
        m.movie_id
),

CastRoles AS (
    SELECT 
        c.person_id,
        COUNT(DISTINCT c.movie_id) AS movies_as_actor,
        SUM(CASE WHEN r.role = 'Lead' THEN 1 ELSE 0 END) AS lead_roles
    FROM 
        cast_info c
    JOIN 
        role_type r ON c.role_id = r.id
    GROUP BY 
        c.person_id
),

PopularDirectors AS (
    SELECT 
        m.director,
        COUNT(m.movie_id) AS directed_movies
    FROM 
        MovieDetails m
    WHERE 
        m.director IS NOT NULL 
    GROUP BY 
        m.director
    HAVING 
        COUNT(m.movie_id) >= 3
),

FinalOutput AS (
    SELECT 
        r.movie_id,
        r.title,
        r.production_year,
        COALESCE(d.director, 'Unknown') AS director,
        COALESCE(c.movies_as_actor, 0) AS actor_count,
        COALESCE(c.lead_roles, 0) AS lead_count,
        CASE 
            WHEN d.company_count IS NULL THEN 'No companies involved' 
            ELSE CONCAT('Companies involved: ', d.company_count) 
        END AS company_info,
        CASE 
            WHEN r.title_rank IS NULL THEN 'Title rank not available' 
            ELSE CONCAT('Rank in ', r.production_year, ': ', r.title_rank) 
        END AS title_ranking
    FROM 
        RankedMovies r
    LEFT JOIN 
        MovieDetails d ON r.movie_id = d.movie_id
    LEFT JOIN 
        CastRoles c ON c.person_id IN (SELECT person_id FROM cast_info WHERE movie_id = r.movie_id)
    WHERE 
        LOWER(r.title) LIKE '%star%' 
    ORDER BY 
        r.production_year DESC, r.title;
