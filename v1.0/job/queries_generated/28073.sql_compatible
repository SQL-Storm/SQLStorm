
WITH RankedMovies AS (
    SELECT 
        mt.title AS movie_title,
        mt.production_year,
        COUNT(DISTINCT mc.company_id) AS company_count,
        COUNT(DISTINCT k.keyword) AS keyword_count,
        ROW_NUMBER() OVER (PARTITION BY mt.production_year ORDER BY COUNT(DISTINCT mc.company_id) DESC) AS rank
    FROM 
        aka_title mt
    JOIN 
        movie_companies mc ON mt.id = mc.movie_id
    LEFT JOIN 
        movie_keyword mw ON mt.id = mw.movie_id
    LEFT JOIN 
        keyword k ON mw.keyword_id = k.id
    GROUP BY 
        mt.title, mt.production_year
),

PopularMovies AS (
    SELECT 
        rm.movie_title,
        rm.production_year,
        rm.company_count,
        rm.keyword_count
    FROM 
        RankedMovies rm
    WHERE 
        rm.rank <= 5
)

SELECT 
    pm.movie_title,
    pm.production_year,
    pm.company_count,
    pm.keyword_count,
    STRING_AGG(DISTINCT a.name ORDER BY a.name) AS actors,
    STRING_AGG(DISTINCT cn.name ORDER BY cn.name) AS companies
FROM 
    PopularMovies pm
JOIN 
    movie_companies mc ON pm.movie_title = (SELECT title FROM aka_title WHERE id = mc.movie_id)
JOIN 
    cast_info ci ON ci.movie_id = (SELECT id FROM aka_title WHERE title = pm.movie_title LIMIT 1)
JOIN 
    aka_name a ON ci.person_id = a.person_id
JOIN 
    company_name cn ON mc.company_id = cn.id
GROUP BY 
    pm.movie_title, pm.production_year, pm.company_count, pm.keyword_count
ORDER BY 
    pm.production_year DESC, pm.company_count DESC;
