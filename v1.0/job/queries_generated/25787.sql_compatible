
WITH MovieDetails AS (
    SELECT
        t.title,
        t.production_year,
        ARRAY_AGG(DISTINCT ak.name) AS aka_names,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords
    FROM
        title t
    LEFT JOIN
        aka_title at ON t.id = at.movie_id
    LEFT JOIN
        aka_name ak ON ak.id = at.id
    LEFT JOIN
        movie_keyword mk ON mk.movie_id = t.id
    LEFT JOIN
        keyword k ON k.id = mk.keyword_id
    GROUP BY
        t.title, t.production_year
),
CastDetails AS (
    SELECT
        m.movie_id,
        ARRAY_AGG(DISTINCT p.name) AS cast_names,
        ARRAY_AGG(DISTINCT rt.role) AS roles,
        COUNT(ci.id) AS cast_count
    FROM
        cast_info ci
    JOIN
        name p ON p.id = ci.person_id
    JOIN
        role_type rt ON rt.id = ci.role_id
    JOIN
        complete_cast m ON m.movie_id = ci.movie_id
    GROUP BY
        m.movie_id
)
SELECT
    md.title,
    md.production_year,
    md.aka_names,
    cd.cast_names,
    cd.roles,
    cd.cast_count,
    ARRAY_AGG(DISTINCT c.name) AS companies
FROM
    MovieDetails md
LEFT JOIN
    movie_companies mc ON mc.movie_id = (SELECT id FROM title WHERE title = md.title AND production_year = md.production_year)
LEFT JOIN
    company_name c ON c.id = mc.company_id
LEFT JOIN
    CastDetails cd ON cd.movie_id = md.title
GROUP BY
    md.title, md.production_year, cd.cast_names, cd.roles, cd.cast_count
ORDER BY
    md.production_year DESC, md.title;
