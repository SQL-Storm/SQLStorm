
WITH RankedMovies AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC, t.title) AS rn
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
TopRatedTitles AS (
    SELECT 
        title_id,
        title,
        production_year
    FROM 
        RankedMovies
    WHERE 
        rn <= 5
),
PersonRoles AS (
    SELECT 
        ci.person_id,
        ci.movie_id,
        rt.role,
        COUNT(*) OVER (PARTITION BY ci.person_id, rt.role) AS role_count
    FROM 
        cast_info ci
    JOIN 
        role_type rt ON ci.role_id = rt.id
    WHERE 
        rt.role IS NOT NULL
),
CompanyDetails AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ') AS company_names,
        STRING_AGG(DISTINCT ct.kind, ', ') AS company_types
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    GROUP BY 
        mc.movie_id
),
MovieDetails AS (
    SELECT 
        tt.title AS title,
        tt.production_year,
        pr.person_id,
        pr.role,
        COUNT(DISTINCT pr.person_id) OVER (PARTITION BY tt.title ORDER BY pr.role_count DESC) AS actor_rank,
        cd.company_names,
        cd.company_types
    FROM 
        TopRatedTitles tt
    LEFT JOIN 
        PersonRoles pr ON tt.title_id = pr.movie_id
    LEFT JOIN 
        CompanyDetails cd ON tt.title_id = cd.movie_id
)

SELECT 
    title,
    production_year,
    COALESCE(role, 'Unknown') AS person_role,
    COALESCE(actor_rank, 0) AS rank,
    COALESCE(company_names, 'No Companies') AS companies,
    CASE 
        WHEN production_year IS NULL THEN 'Unknown Year'
        WHEN production_year < 2000 THEN 'Classic'
        ELSE 'Modern'
    END AS era
FROM 
    MovieDetails
WHERE 
    (production_year >= 2000 AND title LIKE '%A%') OR 
    (production_year < 2000 AND title LIKE '%B%')
GROUP BY 
    title,
    production_year,
    role,
    actor_rank,
    company_names,
    companies
ORDER BY 
    production_year DESC,
    actor_rank ASC;
