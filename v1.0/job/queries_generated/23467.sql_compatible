
WITH movie_roles AS (
    SELECT 
        c.movie_id, 
        COUNT(DISTINCT c.person_id) AS total_actors,
        SUM(CASE WHEN r.role = 'director' THEN 1 ELSE 0 END) AS director_count,
        SUM(CASE WHEN r.role = 'writer' THEN 1 ELSE 0 END) AS writer_count
    FROM 
        cast_info c
    JOIN 
        role_type r ON c.role_id = r.id
    GROUP BY 
        c.movie_id
),

movie_information AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        m.production_year,
        COALESCE(mi.info, 'No info available') AS movie_info,
        mk.keyword AS prominent_keyword,
        COALESCE(cn.name, 'Unknown') AS company_name
    FROM 
        aka_title m
    LEFT JOIN 
        movie_info mi ON m.id = mi.movie_id
    LEFT JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    LEFT JOIN 
        movie_companies mc ON m.id = mc.movie_id
    LEFT JOIN 
        company_name cn ON mc.company_id = cn.id
)

SELECT 
    mi.movie_id,
    mi.title,
    mi.production_year,
    mi.movie_info,
    mi.prominent_keyword,
    mr.total_actors,
    mr.director_count,
    mr.writer_count,
    CASE 
        WHEN mr.total_actors > 10 THEN 'Blockbuster'
        WHEN mr.director_count > 0 AND mr.writer_count > 0 THEN 'Creator Duo'
        ELSE 'Indie Film'
    END AS film_category,
    CASE 
        WHEN mi.production_year IS NULL THEN 'Production year unknown'
        WHEN mi.production_year < 1990 THEN 'Classic Film'
        ELSE 'Modern Film'
    END AS film_age,
    ROW_NUMBER() OVER (PARTITION BY mi.production_year ORDER BY mr.total_actors DESC) AS row_num
FROM 
    movie_information mi
JOIN 
    movie_roles mr ON mi.movie_id = mr.movie_id
WHERE 
    (mi.prominent_keyword IS NOT NULL AND mi.prominent_keyword <> '') 
    AND (mi.production_year > 1980 OR mi.production_year IS NULL)
ORDER BY 
    mi.production_year DESC,
    mr.total_actors DESC;
