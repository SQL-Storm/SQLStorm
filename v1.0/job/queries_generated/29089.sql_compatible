
WITH RankedMovies AS (
    SELECT 
        m.id AS movie_id, 
        m.title,
        k.keyword AS primary_keyword, 
        m.production_year,
        ROW_NUMBER() OVER (PARTITION BY k.keyword ORDER BY m.production_year DESC) AS rank
    FROM 
        aka_title m
    JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        m.production_year >= 2000
),
ActorsWithRoles AS (
    SELECT 
        a.name AS actor_name,
        COUNT(DISTINCT c.movie_id) AS movie_count,
        STRING_AGG(DISTINCT r.role, ', ') AS roles
    FROM 
        cast_info c
    JOIN 
        aka_name a ON c.person_id = a.person_id
    JOIN 
        role_type r ON c.role_id = r.id
    GROUP BY 
        a.name
),
MoviesByActor AS (
    SELECT 
        a.actor_name,
        rm.movie_id,
        rm.title,
        rm.production_year,
        COUNT(DISTINCT mk.keyword_id) AS keyword_count
    FROM 
        RankedMovies rm
    JOIN 
        cast_info c ON rm.movie_id = c.movie_id
    JOIN 
        aka_name a ON c.person_id = a.person_id
    JOIN 
        movie_keyword mk ON rm.movie_id = mk.movie_id
    GROUP BY 
        a.actor_name, rm.movie_id, rm.title, rm.production_year
)
SELECT 
    mba.actor_name,
    mba.title,
    mba.production_year,
    mba.keyword_count,
    ar.movie_count,
    ar.roles
FROM 
    MoviesByActor mba
JOIN 
    ActorsWithRoles ar ON mba.actor_name = ar.actor_name
WHERE 
    mba.keyword_count > 3
ORDER BY 
    mba.production_year DESC, mba.keyword_count DESC;
