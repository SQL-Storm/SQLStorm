
WITH RankedMovies AS (
    SELECT m.id AS movie_id,
           m.title,
           m.production_year,
           m.kind_id,
           RANK() OVER (PARTITION BY m.kind_id ORDER BY m.production_year DESC) AS rank_per_kind,
           COUNT(c.id) OVER (PARTITION BY m.id) AS cast_count
    FROM aka_title m
    LEFT JOIN cast_info c ON m.id = c.movie_id
    WHERE m.production_year IS NOT NULL
),
MovieKeywords AS (
    SELECT mk.movie_id,
           k.keyword,
           ROW_NUMBER() OVER (PARTITION BY mk.movie_id ORDER BY k.keyword) AS keyword_rank
    FROM movie_keyword mk
    JOIN keyword k ON mk.keyword_id = k.id
),
TopMovies AS (
    SELECT rm.movie_id,
           rm.title,
           rm.production_year,
           rm.kind_id,
           rm.rank_per_kind,
           rm.cast_count,
           COALESCE(mk.keyword, 'No Keywords') AS keywords
    FROM RankedMovies rm
    LEFT JOIN MovieKeywords mk ON rm.movie_id = mk.movie_id AND mk.keyword_rank = 1
    WHERE rm.rank_per_kind <= 5
),
TopCompanies AS (
    SELECT mc.movie_id,
           STRING_AGG(DISTINCT cn.name ORDER BY cn.name) AS companies
    FROM movie_companies mc
    JOIN company_name cn ON mc.company_id = cn.id
    GROUP BY mc.movie_id
),
CompleteInfo AS (
    SELECT tm.movie_id,
           tm.title,
           tm.production_year,
           tm.keywords,
           tc.companies,
           CASE 
               WHEN tm.production_year BETWEEN 2000 AND 2020 THEN 'Recent'
               WHEN tm.production_year IS NULL THEN 'Unknown'
               ELSE 'Classic'
           END AS era
    FROM TopMovies tm
    LEFT JOIN TopCompanies tc ON tm.movie_id = tc.movie_id
)
SELECT ci.id AS cast_info_id,
       ci.note AS casting_note,
       ci.nr_order,
       ci.role_id,
       ci.movie_id,
       ci.person_id,
       COALESCE(STRING_AGG(DISTINCT comp.kind ORDER BY comp.kind), 'No Companies') AS companies_in_movie,
       ci.cast_count
FROM cast_info ci
LEFT JOIN (SELECT mc.movie_id, ct.kind 
           FROM movie_companies mc
           JOIN company_type ct ON mc.company_type_id = ct.id) comp ON ci.movie_id = comp.movie_id
JOIN CompleteInfo cinfo ON ci.movie_id = cinfo.movie_id
WHERE ci.note IS NOT NULL 
GROUP BY ci.id, ci.note, ci.nr_order, ci.role_id, ci.movie_id, ci.person_id, ci.cast_count
ORDER BY cinfo.production_year DESC, ci.cast_count DESC
LIMIT 50;
