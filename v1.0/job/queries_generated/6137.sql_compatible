
WITH ActorMovies AS (
    SELECT 
        a.id AS actor_id, 
        a.name AS actor_name, 
        t.title AS movie_title, 
        t.production_year AS year 
    FROM 
        aka_name a 
    JOIN 
        cast_info ci ON a.person_id = ci.person_id 
    JOIN 
        aka_title t ON ci.movie_id = t.movie_id 
    WHERE 
        a.name IS NOT NULL
), 
CompanyMovies AS (
    SELECT 
        m.movie_id, 
        c.name AS company_name, 
        ct.kind AS company_type 
    FROM 
        movie_companies m 
    JOIN 
        company_name c ON m.company_id = c.id 
    JOIN 
        company_type ct ON m.company_type_id = ct.id 
), 
KeywordMovies AS (
    SELECT 
        mk.movie_id, 
        k.keyword AS movie_keyword 
    FROM 
        movie_keyword mk 
    JOIN 
        keyword k ON mk.keyword_id = k.id 
), 
MovieInfo AS (
    SELECT 
        mi.movie_id, 
        STRING_AGG(mi.info, ', ') AS info_details 
    FROM 
        movie_info mi 
    GROUP BY 
        mi.movie_id 
)

SELECT 
    am.actor_id, 
    am.actor_name, 
    am.movie_title, 
    am.year, 
    cm.company_name, 
    cm.company_type, 
    km.movie_keyword, 
    mi.info_details 
FROM 
    ActorMovies am 
LEFT JOIN 
    CompanyMovies cm ON am.movie_title = cm.movie_id 
LEFT JOIN 
    KeywordMovies km ON am.movie_title = km.movie_id 
LEFT JOIN 
    MovieInfo mi ON am.movie_title = mi.movie_id 
ORDER BY 
    am.year DESC, 
    am.actor_name;
