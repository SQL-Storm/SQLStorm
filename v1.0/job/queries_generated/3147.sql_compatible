
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
TopMovies AS (
    SELECT 
        movie_id, 
        title, 
        production_year 
    FROM 
        RankedMovies 
    WHERE 
        rank <= 10
),
MovieCast AS (
    SELECT 
        tc.movie_id,
        c.person_id,
        a.name AS actor_name,
        ct.kind AS role
    FROM 
        cast_info tc
    JOIN 
        aka_name a ON tc.person_id = a.person_id
    JOIN 
        comp_cast_type ct ON tc.person_role_id = ct.id
    WHERE 
        a.name IS NOT NULL
)
SELECT 
    tm.title,
    tm.production_year,
    STRING_AGG(DISTINCT mc.actor_name, ', ') AS actors,
    COUNT(DISTINCT mc.person_id) AS actor_count,
    ct.kind AS company_type,
    COALESCE(cn.name, 'Unknown') AS company_name
FROM 
    TopMovies tm 
LEFT JOIN 
    MovieCast mc ON tm.movie_id = mc.movie_id
LEFT JOIN 
    movie_companies mcp ON tm.movie_id = mcp.movie_id
LEFT JOIN 
    company_name cn ON mcp.company_id = cn.id
LEFT JOIN 
    company_type ct ON mcp.company_type_id = ct.id
GROUP BY 
    tm.movie_id, 
    tm.title,
    tm.production_year,
    ct.kind, 
    cn.name
ORDER BY 
    tm.production_year DESC, 
    actor_count DESC;
