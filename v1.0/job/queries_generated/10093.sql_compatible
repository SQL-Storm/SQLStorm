
SELECT 
    t.title,
    a.name AS actor_name,
    c.kind AS role,
    mi.production_year,
    k.keyword
FROM 
    title t
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name cn ON mc.company_id = cn.id
JOIN 
    movie_info mi ON t.id = mi.movie_id
JOIN 
    aka_name a ON a.person_id IN (
        SELECT 
            ci.person_id 
        FROM 
            cast_info ci 
        WHERE 
            ci.movie_id = t.id
    )
JOIN 
    role_type c ON c.id IN (
        SELECT 
            ci.role_id 
        FROM 
            cast_info ci 
        WHERE 
            ci.movie_id = t.id AND ci.person_id = a.person_id
    )
LEFT JOIN 
    movie_keyword mk ON t.id = mk.movie_id
LEFT JOIN 
    keyword k ON mk.keyword_id = k.id
WHERE 
    mi.info_type_id = (SELECT id FROM info_type WHERE info = 'Genre')
ORDER BY 
    mi.production_year DESC;
