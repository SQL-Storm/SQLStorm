
WITH RankedTitles AS (
    SELECT 
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        aka_title t
    WHERE 
        t.kind_id = (SELECT id FROM kind_type WHERE kind = 'movie')
), 
MovieKeywords AS (
    SELECT 
        m.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword m
    JOIN 
        keyword k ON m.keyword_id = k.id
    GROUP BY 
        m.movie_id
), 
ActorInfo AS (
    SELECT 
        a.person_id,
        a.name,
        COUNT(ci.movie_id) AS movie_count,
        STRING_AGG(DISTINCT ti.title, ', ') AS titles
    FROM 
        aka_name a
    LEFT JOIN 
        cast_info ci ON a.person_id = ci.person_id
    LEFT JOIN 
        title ti ON ci.movie_id = ti.id
    GROUP BY 
        a.person_id, a.name
)
SELECT 
    r.production_year,
    r.title,
    COALESCE(a.name, 'Unknown') AS actor_name,
    COALESCE(a.movie_count, 0) AS total_movies,
    COALESCE(k.keywords, 'No Keywords') AS keywords
FROM 
    RankedTitles r
LEFT JOIN 
    ActorInfo a ON a.titles LIKE '%' || r.title || '%'
LEFT JOIN 
    MovieKeywords k ON k.movie_id = r.movie_id
WHERE 
    r.title_rank <= 5
ORDER BY 
    r.production_year DESC, r.title;
