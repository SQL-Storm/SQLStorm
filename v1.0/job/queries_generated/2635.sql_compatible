
WITH RankedMovies AS (
    SELECT 
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.id DESC) AS rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
CastInfoWithRoles AS (
    SELECT 
        c.movie_id,
        COALESCE(CAST(r.role AS VARCHAR), 'Unknown') AS role_name,
        COUNT(c.person_id) AS actor_count
    FROM 
        cast_info c
    LEFT JOIN 
        role_type r ON c.role_id = r.id
    GROUP BY 
        c.movie_id, r.role
),
MovieCompanies AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ') AS company_names
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        mc.movie_id
)
SELECT 
    rm.title,
    rm.production_year,
    COALESCE(cr.actor_count, 0) AS total_actors,
    COALESCE(mco.company_names, 'No Companies') AS companies_involved
FROM 
    RankedMovies rm
LEFT JOIN 
    CastInfoWithRoles cr ON rm.title = cr.movie_id
LEFT JOIN 
    MovieCompanies mco ON rm.title = mco.movie_id
WHERE 
    rm.rank <= 5 OR rm.production_year = 2022
ORDER BY 
    rm.production_year DESC, rm.title ASC;
