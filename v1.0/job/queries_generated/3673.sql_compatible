
WITH movie_details AS (
    SELECT
        m.id AS movie_id,
        m.title,
        m.production_year,
        ARRAY_AGG(DISTINCT k.keyword) AS keywords,
        COUNT(DISTINCT c.person_id) AS cast_count
    FROM
        aka_title m
    LEFT JOIN
        movie_keyword mk ON m.id = mk.movie_id
    LEFT JOIN
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN
        complete_cast cc ON m.id = cc.movie_id
    LEFT JOIN
        cast_info c ON cc.subject_id = c.id
    GROUP BY
        m.id, m.title, m.production_year
),
popular_titles AS (
    SELECT
        md.movie_id,
        md.title,
        md.production_year,
        md.keywords,
        md.cast_count,
        ROW_NUMBER() OVER (PARTITION BY md.production_year ORDER BY md.cast_count DESC) AS rank
    FROM
        movie_details md
),
recent_movies AS (
    SELECT
        p.title,
        p.production_year,
        COALESCE(p.keywords, ARRAY[]::VARCHAR[]) AS keywords,
        p.cast_count,
        p.rank
    FROM
        popular_titles p
    WHERE
        p.production_year = (SELECT MAX(production_year) FROM popular_titles)
)
SELECT
    r.title,
    r.production_year,
    STRING_AGG(DISTINCT r.keywords::TEXT, ', ') AS keyword_list,
    r.cast_count
FROM
    recent_movies r
LEFT JOIN
    aka_name a ON a.person_id IN (SELECT DISTINCT c.person_id FROM cast_info c WHERE c.movie_id = r.movie_id)
GROUP BY
    r.title, r.production_year, r.cast_count
HAVING
    COUNT(a.id) > 5
ORDER BY
    r.cast_count DESC;
