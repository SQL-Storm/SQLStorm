
SELECT 
    ak.name AS actor_name,
    ti.title AS movie_title,
    EXTRACT(YEAR FROM ti.production_year) AS production_year,
    STRING_AGG(DISTINCT ct.kind, ',' ORDER BY ct.kind) AS company_types,
    STRING_AGG(DISTINCT kw.keyword, ',' ORDER BY kw.keyword) AS keywords,
    COUNT(DISTINCT ci.movie_id) AS total_movies,
    AVG(CASE WHEN mi.info_type_id = 1 THEN LENGTH(mi.info) END) AS avg_movie_length
FROM 
    aka_name ak
JOIN 
    cast_info ci ON ak.person_id = ci.person_id
JOIN 
    aka_title ti ON ci.movie_id = ti.movie_id
JOIN 
    movie_companies mc ON ti.id = mc.movie_id
JOIN 
    company_type ct ON mc.company_type_id = ct.id
JOIN 
    movie_keyword mk ON ti.id = mk.movie_id
JOIN 
    keyword kw ON mk.keyword_id = kw.id
JOIN 
    movie_info mi ON ti.id = mi.movie_id
WHERE 
    ak.name IS NOT NULL 
    AND mi.note IS NULL 
    AND ti.production_year >= 2000
GROUP BY 
    ak.name, ti.title, ti.production_year
HAVING 
    COUNT(DISTINCT ti.id) > 5
ORDER BY 
    production_year DESC, total_movies DESC;
