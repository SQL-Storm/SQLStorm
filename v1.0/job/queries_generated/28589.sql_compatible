
WITH movie_info_cte AS (
    SELECT 
        m.id AS movie_id,
        t.title,
        m.production_year,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        title t
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        movie_info mi ON t.id = mi.movie_id
    WHERE 
        mi.info_type_id IN (SELECT id FROM info_type WHERE info = 'description')
    GROUP BY 
        m.id, t.title, m.production_year
), 
popular_actors AS (
    SELECT 
        c.movie_id,
        STRING_AGG(DISTINCT a.name, ', ') AS actors
    FROM 
        cast_info c
    JOIN 
        aka_name a ON c.person_id = a.person_id
    WHERE 
        c.nr_order < 10
    GROUP BY 
        c.movie_id
), 
company_details AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ') AS companies
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        mc.movie_id
)
SELECT 
    m.movie_id,
    m.title,
    m.production_year,
    COALESCE(pa.actors, 'No actors listed') AS actors,
    COALESCE(cd.companies, 'No companies listed') AS companies,
    m.keywords
FROM 
    movie_info_cte m
LEFT JOIN 
    popular_actors pa ON m.movie_id = pa.movie_id
LEFT JOIN 
    company_details cd ON m.movie_id = cd.movie_id
ORDER BY 
    m.production_year DESC, 
    m.title;
