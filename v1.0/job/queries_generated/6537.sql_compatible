
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    c.kind AS company_type,
    COUNT(DISTINCT mk.keyword) AS keyword_count,
    STRING_AGG(DISTINCT k.keyword ORDER BY k.keyword) AS keywords,
    MIN(mi.info) AS movie_info,
    MAX(cast.nr_order) AS cast_order
FROM 
    aka_name a
JOIN 
    cast_info cast ON a.person_id = cast.person_id
JOIN 
    aka_title t ON cast.movie_id = t.movie_id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_type c ON mc.company_type_id = c.id
JOIN 
    movie_keyword mk ON t.id = mk.movie_id
JOIN 
    keyword k ON mk.keyword_id = k.id
LEFT JOIN 
    movie_info mi ON t.id = mi.movie_id
WHERE 
    t.production_year BETWEEN 2000 AND 2023
    AND c.kind LIKE '%Production%'
GROUP BY 
    a.name, t.title, c.kind, cast.nr_order
ORDER BY 
    keyword_count DESC, actor_name ASC, movie_title ASC;
