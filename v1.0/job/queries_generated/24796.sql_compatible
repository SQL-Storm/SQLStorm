
WITH RECURSIVE MovieHierarchy AS (
    SELECT
        mt.id AS movie_id,
        mt.title,
        mt.production_year,
        mt.kind_id,
        1 AS level
    FROM
        aka_title mt
    WHERE
        mt.production_year IS NOT NULL

    UNION ALL

    SELECT
        ml.linked_movie_id,
        at.title,
        at.production_year,
        at.kind_id,
        mh.level + 1
    FROM
        movie_link ml
    JOIN
        aka_title at ON ml.linked_movie_id = at.id
    JOIN
        MovieHierarchy mh ON ml.movie_id = mh.movie_id
),

CastDetails AS (
    SELECT
        ca.person_id,
        ka.name AS actor_name,
        ka.surname_pcode AS surname_code,
        ROW_NUMBER() OVER (PARTITION BY ca.movie_id ORDER BY ca.nr_order) AS actor_rank
    FROM
        cast_info ca
    JOIN
        aka_name ka ON ca.person_id = ka.person_id
    WHERE
        ka.name IS NOT NULL
),

MovieKeywords AS (
    SELECT
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM
        movie_keyword mk
    JOIN
        keyword k ON mk.keyword_id = k.id
    GROUP BY
        mk.movie_id
),

MovieInfoExtended AS (
    SELECT
        mi.movie_id,
        STRING_AGG(CONCAT(it.info, ': ', mi.info), '; ') AS info_details
    FROM
        movie_info mi
    JOIN
        info_type it ON mi.info_type_id = it.id
    GROUP BY
        mi.movie_id
)

SELECT
    mh.movie_id,
    mh.title,
    mh.production_year,
    mh.kind_id,
    cd.actor_name,
    cd.surname_code,
    mke.keywords,
    mie.info_details,
    CASE 
        WHEN mh.level > 1 THEN 'Sequel/Related'
        ELSE 'Standalone'
    END AS movie_type,
    (SELECT COUNT(*) FROM cast_info c WHERE c.movie_id = mh.movie_id) AS total_actors,
    COALESCE(MIN(cd.actor_rank), 0) AS min_actor_rank,
    COUNT(DISTINCT cd.actor_name) AS unique_actors
FROM
    MovieHierarchy mh
LEFT JOIN
    CastDetails cd ON mh.movie_id = cd.movie_id
LEFT JOIN
    MovieKeywords mke ON mh.movie_id = mke.movie_id
LEFT JOIN
    MovieInfoExtended mie ON mh.movie_id = mie.movie_id
GROUP BY
    mh.movie_id, mh.title, mh.production_year, mh.kind_id, cd.actor_name, cd.surname_code, mke.keywords, mie.info_details, mh.level
ORDER BY
    mh.production_year DESC, mh.title ASC
LIMIT 100;
