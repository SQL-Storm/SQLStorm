
WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(ci.person_id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(ci.person_id) DESC) AS year_rank
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info ci ON t.id = ci.movie_id
    GROUP BY 
        t.id, t.title, t.production_year
),
high_cast_movies AS (
    SELECT 
        rm.*,
        COALESCE(
            (SELECT COUNT(DISTINCT mc.company_id) 
             FROM movie_companies mc 
             WHERE mc.movie_id = rm.movie_id 
            ), 0
        ) AS company_count
    FROM 
        ranked_movies rm
    WHERE 
        rm.cast_count > 5
),
final_selection AS (
    SELECT 
        hcm.title,
        hcm.production_year,
        hcm.cast_count,
        hcm.company_count,
        RANK() OVER (ORDER BY hcm.cast_count DESC, hcm.company_count DESC) AS overall_rank
    FROM 
        high_cast_movies hcm
    WHERE 
        hcm.year_rank = 1
)
SELECT 
    fs.title,
    fs.production_year,
    fs.cast_count,
    fs.company_count,
    (SELECT STRING_AGG(DISTINCT ak.name, ', ') 
     FROM aka_name ak 
     WHERE ak.person_id IN (SELECT ci.person_id 
                            FROM cast_info ci 
                            WHERE ci.movie_id = fs.movie_id)
    ) AS top_cast_names
FROM 
    final_selection fs
WHERE 
    fs.company_count IS NOT NULL
ORDER BY 
    fs.overall_rank
LIMIT 10;
