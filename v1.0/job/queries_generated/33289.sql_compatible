
WITH RECURSIVE ActorHierarchy AS (
    SELECT
        c.person_id,
        COUNT(c.movie_id) AS movie_count,
        ROW_NUMBER() OVER (PARTITION BY c.person_id ORDER BY COUNT(c.movie_id) DESC) AS rn
    FROM
        cast_info c
    JOIN
        aka_name a ON c.person_id = a.person_id
    GROUP BY
        c.person_id
    HAVING
        COUNT(c.movie_id) > 10
),
TopMovies AS (
    SELECT
        m.title,
        m.production_year,
        k.keyword,
        ROW_NUMBER() OVER (PARTITION BY m.id ORDER BY m.production_year DESC) AS rn
    FROM
        aka_title m
    LEFT JOIN
        movie_keyword mk ON m.id = mk.movie_id
    LEFT JOIN
        keyword k ON mk.keyword_id = k.id
    WHERE
        m.production_year >= 2000
)
SELECT
    a.name,
    ah.movie_count,
    tm.title,
    tm.production_year,
    COUNT(DISTINCT mk.keyword_id) AS keyword_count
FROM
    ActorHierarchy ah
JOIN
    aka_name a ON ah.person_id = a.person_id
JOIN
    cast_info ci ON a.person_id = ci.person_id
JOIN
    TopMovies tm ON ci.movie_id = tm.id
LEFT JOIN
    movie_keyword mk ON tm.id = mk.movie_id
WHERE
    a.name IS NOT NULL
AND
    ah.rn = 1
GROUP BY
    a.name, ah.movie_count, tm.title, tm.production_year
HAVING
    COUNT(DISTINCT mk.keyword_id) > 2
ORDER BY
    ah.movie_count DESC, tm.production_year DESC;
