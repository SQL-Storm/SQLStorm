
WITH RankedTitles AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        title t
    WHERE 
        t.production_year IS NOT NULL
),
ActorTitles AS (
    SELECT 
        a.name AS actor_name,
        at.title AS title,
        at.production_year,
        COALESCE(ki.keyword, 'No Keywords') AS keyword
    FROM 
        aka_name a
    JOIN 
        cast_info ci ON a.person_id = ci.person_id
    JOIN 
        aka_title at ON ci.movie_id = at.movie_id
    LEFT JOIN 
        movie_keyword mk ON mk.movie_id = at.movie_id
    LEFT JOIN 
        keyword ki ON mk.keyword_id = ki.id
),
SubsetMovies AS (
    SELECT 
        ct.kind AS company_type,
        at.title,
        at.production_year,
        COUNT(mc.company_id) AS num_companies
    FROM 
        ActorTitles at
    JOIN 
        movie_companies mc ON at.title = mc.movie_id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    GROUP BY 
        ct.kind, at.title, at.production_year
    HAVING 
        COUNT(mc.company_id) > 1
)
SELECT 
    rt.title_id,
    rt.title, 
    rt.production_year,
    rt.title_rank, 
    sm.company_type, 
    sm.num_companies
FROM 
    RankedTitles rt
LEFT JOIN 
    SubsetMovies sm ON rt.title = sm.title AND rt.production_year = sm.production_year
WHERE 
    rt.title_rank <= 3 
ORDER BY 
    rt.production_year DESC, 
    rt.title ASC;
