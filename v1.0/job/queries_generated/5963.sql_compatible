
WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT c.person_id) AS total_cast,
        ARRAY_AGG(DISTINCT cn.name) AS company_names,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT c.person_id) DESC) AS rank
    FROM 
        title t
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    JOIN 
        cast_info c ON cc.subject_id = c.id
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        t.id, t.title, t.production_year
),
selected_movies AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        rm.total_cast,
        rm.company_names
    FROM 
        ranked_movies rm
    WHERE 
        rm.rank <= 10
)
SELECT 
    sm.movie_id,
    sm.title,
    sm.production_year,
    sm.total_cast,
    sm.company_names,
    pi.info AS director_info
FROM 
    selected_movies sm
LEFT JOIN 
    person_info pi ON pi.person_id IN (
        SELECT 
            c.person_id 
        FROM 
            cast_info c
        WHERE 
            c.role_id = (SELECT id FROM role_type WHERE role = 'Director') 
            AND c.movie_id = sm.movie_id
    )
ORDER BY 
    sm.production_year DESC, 
    sm.total_cast DESC;
