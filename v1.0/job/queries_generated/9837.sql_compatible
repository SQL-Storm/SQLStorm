
SELECT 
    a.name AS aka_name, 
    t.title AS movie_title, 
    c.nr_order, 
    STRING_AGG(DISTINCT k.keyword ORDER BY k.keyword ASC) AS keywords, 
    STRING_AGG(DISTINCT cn.name ORDER BY cn.name ASC) AS companies, 
    COUNT(DISTINCT pi.info_type_id) AS info_count
FROM 
    aka_name a
JOIN 
    cast_info c ON a.person_id = c.person_id
JOIN 
    aka_title t ON c.movie_id = t.movie_id
JOIN 
    movie_keyword mk ON t.id = mk.movie_id
JOIN 
    keyword k ON mk.keyword_id = k.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name cn ON mc.company_id = cn.id
JOIN 
    movie_info mi ON t.id = mi.movie_id
JOIN 
    person_info pi ON a.person_id = pi.person_id
WHERE 
    t.production_year >= 2000 
    AND c.nr_order <= 3
GROUP BY 
    a.name, t.title, c.nr_order
ORDER BY 
    COUNT(DISTINCT pi.info_type_id) DESC, a.name ASC;
