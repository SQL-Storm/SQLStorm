
SELECT 
    t.title AS movie_title,
    ak.name AS actor_name,
    ckt.kind AS character_type,
    mc.note AS company_note,
    mi.info AS movie_info
FROM 
    title t
JOIN 
    aka_title ak_t ON t.id = ak_t.movie_id
JOIN 
    aka_name ak ON ak_t.id = ak.id
JOIN 
    cast_info ci ON ak.person_id = ci.person_id
JOIN 
    role_type ckt ON ci.role_id = ckt.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_type ct ON mc.company_type_id = ct.id
JOIN 
    movie_info mi ON t.id = mi.movie_id
WHERE 
    t.production_year >= 2000
GROUP BY 
    t.title, ak.name, ckt.kind, mc.note, mi.info, t.production_year
ORDER BY 
    t.production_year DESC, ak.name;
