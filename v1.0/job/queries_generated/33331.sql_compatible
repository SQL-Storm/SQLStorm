
WITH RECURSIVE movie_hierarchy AS (
    SELECT 
        mt.id AS movie_id,
        mt.title,
        mt.production_year,
        1 AS level
    FROM 
        aka_title AS mt
    WHERE 
        mt.production_year >= 2000

    UNION ALL

    SELECT 
        ml.linked_movie_id AS movie_id,
        m.title,
        m.production_year,
        mh.level + 1
    FROM 
        movie_link AS ml
    JOIN 
        title AS m ON m.id = ml.linked_movie_id
    JOIN 
        movie_hierarchy AS mh ON mh.movie_id = ml.movie_id
)
SELECT 
    m.title AS movie_title,
    m.production_year AS release_year,
    COUNT(DISTINCT c.person_id) AS total_cast,
    STRING_AGG(DISTINCT ak.name, ', ') AS actor_names,
    COALESCE(WINDOW_FUNCTION(), 'No Keyword') AS keyword_summary
FROM 
    movie_hierarchy AS m
LEFT JOIN 
    complete_cast AS cc ON m.movie_id = cc.movie_id
LEFT JOIN 
    cast_info AS c ON cc.subject_id = c.id
LEFT JOIN 
    aka_name AS ak ON ak.person_id = c.person_id
LEFT JOIN 
    movie_keyword AS mk ON mk.movie_id = m.movie_id
LEFT JOIN 
    keyword AS k ON k.id = mk.keyword_id
GROUP BY 
    m.movie_id, m.title, m.production_year
HAVING 
    COUNT(DISTINCT c.person_id) > 5 
    AND m.production_year = (SELECT MAX(production_year) FROM aka_title)
ORDER BY 
    m.production_year DESC;
