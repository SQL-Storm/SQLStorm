
SELECT 
    a.name AS actor_name,
    m.title AS movie_title,
    m.production_year,
    r.role AS actor_role,
    k.keyword AS movie_keyword,
    c.name AS company_name,
    ti.info AS movie_info,
    COUNT(DISTINCT comp.id) AS company_count,
    AVG(l.count) AS average_links
FROM 
    aka_name a
JOIN 
    cast_info ci ON a.person_id = ci.person_id
JOIN 
    title m ON ci.movie_id = m.id
JOIN 
    role_type r ON ci.role_id = r.id
JOIN 
    movie_keyword mk ON m.id = mk.movie_id
JOIN 
    keyword k ON mk.keyword_id = k.id
JOIN 
    movie_companies mc ON m.id = mc.movie_id
JOIN 
    company_name c ON mc.company_id = c.id
LEFT JOIN 
    movie_info mi ON m.id = mi.movie_id
LEFT JOIN 
    info_type ti ON mi.info_type_id = ti.id
LEFT JOIN 
    (SELECT 
         ml.movie_id, COUNT(*) AS count 
     FROM 
         movie_link ml 
     GROUP BY 
         ml.movie_id) l ON m.id = l.movie_id
LEFT JOIN 
    movie_info_idx mii ON m.id = mii.movie_id
WHERE 
    m.production_year >= 2000
GROUP BY 
    a.name, m.title, m.production_year, r.role, k.keyword, c.name, ti.info
ORDER BY 
    m.production_year DESC, a.name ASC;
