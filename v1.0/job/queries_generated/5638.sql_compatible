
SELECT
    a.name AS actor_name,
    t.title AS movie_title,
    c.kind AS role_type,
    tc.name AS company_name,
    STRING_AGG(DISTINCT k.keyword ORDER BY k.keyword ASC) AS keywords,
    COUNT(DISTINCT ci.person_id) AS co_actors_count
FROM
    aka_name a
JOIN
    cast_info ci ON a.person_id = ci.person_id
JOIN
    aka_title t ON ci.movie_id = t.movie_id
JOIN
    role_type c ON ci.role_id = c.id
JOIN
    movie_companies mc ON t.id = mc.movie_id
JOIN
    company_name tc ON mc.company_id = tc.id
LEFT JOIN
    movie_keyword mk ON t.id = mk.movie_id
LEFT JOIN
    keyword k ON mk.keyword_id = k.id
WHERE
    t.production_year BETWEEN 2000 AND 2023
    AND c.role LIKE '%actor%'
GROUP BY
    a.name, t.title, c.kind, tc.name
HAVING
    COUNT(DISTINCT ci.movie_id) > 5
ORDER BY
    actor_name ASC, movie_title ASC;
