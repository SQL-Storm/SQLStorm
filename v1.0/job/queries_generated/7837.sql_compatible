
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    c.kind AS character_role,
    p.info AS person_info,
    m.info AS movie_info
FROM 
    aka_name a
JOIN 
    cast_info ci ON a.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
JOIN 
    role_type c ON ci.role_id = c.id
LEFT JOIN 
    person_info p ON a.person_id = p.person_id AND p.info_type_id = (SELECT id FROM info_type WHERE info = 'bio')
LEFT JOIN 
    movie_info m ON t.id = m.movie_id AND m.info_type_id = (SELECT id FROM info_type WHERE info = 'summary')
WHERE 
    t.production_year >= 2000
AND 
    t.kind_id IN (SELECT id FROM kind_type WHERE kind IN ('movie', 'tv series'))
ORDER BY 
    t.production_year DESC, a.name;
