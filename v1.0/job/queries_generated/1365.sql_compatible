
WITH ranked_movies AS (
    SELECT 
        a.title,
        a.production_year,
        ROW_NUMBER() OVER (PARTITION BY a.production_year ORDER BY a.production_year DESC, a.title ASC) AS movie_rank
    FROM 
        aka_title a
    WHERE 
        a.production_year IS NOT NULL
),
company_movie_count AS (
    SELECT 
        mc.movie_id,
        COUNT(DISTINCT c.id) AS company_count
    FROM 
        movie_companies mc
    INNER JOIN 
        company_name c ON mc.company_id = c.id
    GROUP BY 
        mc.movie_id
),
top_movies AS (
    SELECT 
        rm.title,
        rm.production_year,
        cm.company_count,
        rm.movie_rank
    FROM 
        ranked_movies rm
    LEFT JOIN 
        company_movie_count cm ON rm.id = cm.movie_id
    WHERE 
        rm.movie_rank <= 10
)
SELECT 
    tm.title,
    tm.production_year,
    COALESCE(tm.company_count, 0) AS company_count,
    COUNT(DISTINCT ci.person_id) OVER (PARTITION BY tm.production_year) AS actor_count,
    (SELECT COUNT(*) FROM movie_keyword mk WHERE mk.movie_id = tm.movie_id) AS keyword_count
FROM 
    top_movies tm
LEFT JOIN 
    cast_info ci ON tm.movie_id = ci.movie_id
WHERE 
    (tm.production_year BETWEEN 2000 AND 2023) 
    AND (tm.title LIKE '%The%' OR tm.title LIKE '%A%')
GROUP BY 
    tm.title, 
    tm.production_year, 
    tm.company_count
ORDER BY 
    tm.production_year DESC, 
    tm.title;
