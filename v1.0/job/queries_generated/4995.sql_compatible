
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        RANK() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
MovieDetails AS (
    SELECT 
        m.movie_id,
        COALESCE(m.title, 'Unknown Title') AS title,
        COUNT(c.person_id) AS cast_count,
        MIN(t.production_year) AS first_year,
        MAX(t.production_year) AS latest_year
    FROM 
        complete_cast m
    LEFT JOIN 
        cast_info c ON m.movie_id = c.movie_id
    LEFT JOIN 
        RankedMovies t ON m.movie_id = t.movie_id
    GROUP BY 
        m.movie_id, m.title
),
TopMovies AS (
    SELECT 
        movie_id,
        title,
        cast_count,
        first_year,
        latest_year,
        ROW_NUMBER() OVER (ORDER BY cast_count DESC, first_year ASC) AS top_rank
    FROM 
        MovieDetails
    WHERE 
        cast_count > 0
)

SELECT 
    tm.title,
    tm.cast_count,
    tm.first_year,
    tm.latest_year,
    k.keyword
FROM 
    TopMovies tm
LEFT JOIN 
    movie_keyword mk ON tm.movie_id = mk.movie_id
LEFT JOIN 
    keyword k ON mk.keyword_id = k.id
WHERE 
    tm.top_rank <= 10
ORDER BY 
    tm.cast_count DESC, 
    tm.first_year ASC;
