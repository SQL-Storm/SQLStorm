
WITH MovieDetails AS (
    SELECT 
        at.title AS movie_title,
        at.production_year,
        a.name AS actor_name,
        ct.kind AS role_kind,
        ROW_NUMBER() OVER (PARTITION BY at.id ORDER BY ai.nr_order) AS actor_rank
    FROM 
        aka_title at
    JOIN 
        cast_info ai ON at.id = ai.movie_id
    JOIN 
        aka_name a ON ai.person_id = a.person_id
    JOIN 
        role_type ct ON ai.role_id = ct.id
    WHERE 
        at.production_year >= 2000
),
CompCompanies AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ') AS company_names,
        COUNT(DISTINCT mc.company_id) AS company_count
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        mc.movie_id
),
RatedMovies AS (
    SELECT 
        md.movie_title,
        md.production_year,
        cc.company_names,
        cc.company_count,
        COALESCE(md.actor_name, 'Unknown Actor') AS actor, 
        RANK() OVER (ORDER BY md.production_year DESC, cc.company_count DESC) AS movie_rank
    FROM 
        MovieDetails md
    LEFT JOIN 
        CompCompanies cc ON md.movie_title = cc.company_names
)
SELECT 
    rated.*,
    CASE 
        WHEN company_count > 3 THEN 'Major Production'
        ELSE 'Indie/Small Production'
    END AS production_type
FROM 
    RatedMovies rated
WHERE 
    rated.actor_rank = 1
ORDER BY 
    rated.production_year DESC, rated.movie_rank ASC;
