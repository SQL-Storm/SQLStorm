
WITH RankedMovies AS (
    SELECT 
        a.title,
        a.production_year,
        c.name AS company_name,
        COUNT(DISTINCT ci.person_id) AS cast_count,
        DENSE_RANK() OVER (PARTITION BY a.production_year ORDER BY COUNT(DISTINCT ci.person_id) DESC) AS rank
    FROM 
        aka_title a
    LEFT JOIN 
        movie_companies mc ON a.id = mc.movie_id
    LEFT JOIN 
        company_name c ON mc.company_id = c.id
    LEFT JOIN 
        cast_info ci ON a.id = ci.movie_id
    WHERE 
        a.production_year IS NOT NULL 
        AND a.kind_id IN (SELECT DISTINCT id FROM kind_type WHERE kind LIKE 'feature%')
    GROUP BY 
        a.title, a.production_year, c.name
    HAVING 
        COUNT(DISTINCT ci.person_id) > 0
),
TopMovies AS (
    SELECT 
        title,
        production_year,
        company_name,
        cast_count
    FROM 
        RankedMovies 
    WHERE 
        rank <= 5
),
MovieKeywords AS (
    SELECT 
        m.id AS movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        aka_title m
    INNER JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    INNER JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        m.id
),
MovieInfo AS (
    SELECT 
        m.title,
        mk.keywords,
        mi.info AS rating
    FROM 
        TopMovies m
    LEFT JOIN 
        MovieKeywords mk ON m.title = mk.movie_id
    LEFT JOIN 
        movie_info mi ON m.title = mi.movie_id 
    WHERE 
        mi.info_type_id = (SELECT id FROM info_type WHERE info = 'rating')
)
SELECT 
    CASE 
        WHEN m.title IS NOT NULL THEN m.title 
        ELSE 'Unknown Title' 
    END AS movie_title,
    COALESCE(m.production_year, 0) AS production_year,
    COALESCE(m.company_name, 'Independent') AS production_company,
    COALESCE(mk.keywords, 'No Keywords') AS keywords,
    COALESCE(mi.rating, 'Unrated') AS rating
FROM 
    TopMovies m
LEFT JOIN 
    MovieKeywords mk ON m.title = mk.movie_id
LEFT JOIN 
    MovieInfo mi ON m.title = mi.title
WHERE 
    m.cast_count > 1
ORDER BY 
    m.production_year DESC, m.cast_count DESC;
