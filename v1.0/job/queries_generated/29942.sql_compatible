
WITH MovieDetails AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ARRAY_AGG(DISTINCT k.keyword) AS keywords,
        ARRAY_AGG(DISTINCT cn.name) AS companies,
        COUNT(DISTINCT ci.person_id) AS cast_count
    FROM 
        title t
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        movie_companies mc ON t.id = mc.movie_id
    LEFT JOIN 
        company_name cn ON mc.company_id = cn.id
    LEFT JOIN 
        complete_cast cc ON t.id = cc.movie_id
    LEFT JOIN 
        cast_info ci ON cc.subject_id = ci.id
    GROUP BY 
        t.id, t.title, t.production_year
),
ActorInfo AS (
    SELECT 
        ak.person_id AS person_id,
        ak.name AS actor_name,
        COUNT(DISTINCT ci.movie_id) AS movies_count,
        ARRAY_AGG(DISTINCT k.keyword) AS actor_keywords
    FROM 
        aka_name ak
    JOIN 
        cast_info ci ON ak.person_id = ci.person_id
    JOIN 
        person_info pi ON ak.person_id = pi.person_id
    JOIN 
        movie_keyword mk ON ci.movie_id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        ak.person_id, ak.name
),
Reviews AS (
    SELECT 
        t.id AS movie_id,
        AVG(CAST(mi.info_value AS INTEGER)) AS average_rating
    FROM 
        title t
    JOIN 
        movie_info mi ON t.id = mi.movie_id AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'rating' LIMIT 1)
    GROUP BY 
        t.id
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    md.keywords,
    md.companies,
    md.cast_count,
    ai.actor_name,
    ai.movies_count,
    ai.actor_keywords,
    r.average_rating
FROM 
    MovieDetails md
LEFT JOIN 
    ActorInfo ai ON md.movie_id = ai.movies_count
LEFT JOIN 
    Reviews r ON md.movie_id = r.movie_id
ORDER BY 
    md.production_year DESC, md.title;
