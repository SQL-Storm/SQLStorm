
WITH movie_actors AS (
    SELECT 
        ca.movie_id,
        a.name AS actor_name,
        a.md5sum AS actor_md5sum
    FROM 
        cast_info ca
    JOIN 
        aka_name a ON ca.person_id = a.person_id
),
movie_details AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        STRING_AGG(DISTINCT a.actor_name ORDER BY a.actor_name) AS actor_list,
        m.company_id,
        m.company_type_id
    FROM 
        aka_title t
    JOIN 
        movie_companies m ON t.id = m.movie_id
    JOIN 
        movie_actors a ON t.id = a.movie_id
    GROUP BY 
        t.id, t.title, t.production_year, m.company_id, m.company_type_id
),
company_info AS (
    SELECT 
        c.id AS company_id,
        c.name AS company_name,
        ct.kind AS company_type
    FROM 
        company_name c
    JOIN 
        company_type ct ON c.id = ct.id
)
SELECT 
    md.title,
    md.production_year,
    md.actor_list,
    ci.company_name,
    ci.company_type
FROM 
    movie_details md
JOIN 
    company_info ci ON md.company_id = ci.company_id
WHERE 
    md.production_year BETWEEN 2000 AND 2023
ORDER BY 
    md.production_year DESC, md.title;
