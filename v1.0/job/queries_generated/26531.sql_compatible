
WITH MovieDetails AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        c.kind AS company_kind,
        STRING_AGG(DISTINCT ak.name, ', ') AS aka_names,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords,
        STRING_AGG(DISTINCT p.info, ', ') AS person_info
    FROM 
        aka_title ak
    JOIN 
        title t ON ak.movie_id = t.id
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        complete_cast cc ON t.id = cc.movie_id
    LEFT JOIN 
        person_info p ON cc.subject_id = p.person_id 
    WHERE 
        t.production_year >= 2000
    GROUP BY 
        t.id, t.title, t.production_year, c.kind
),
RoleCount AS (
    SELECT 
        cc.movie_id,
        COUNT(DISTINCT cc.person_role_id) AS role_count
    FROM 
        cast_info cc
    GROUP BY 
        cc.movie_id
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    md.company_kind,
    md.aka_names,
    md.keywords,
    rc.role_count
FROM 
    MovieDetails md
LEFT JOIN 
    RoleCount rc ON md.movie_id = rc.movie_id
ORDER BY 
    md.production_year DESC, 
    rc.role_count DESC, 
    md.title;
