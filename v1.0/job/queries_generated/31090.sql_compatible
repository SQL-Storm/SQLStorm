
WITH RECURSIVE MovieHierarchy AS (
    SELECT
        mt.id AS movie_id,
        mt.title,
        mt.production_year,
        1 AS level
    FROM
        aka_title mt
    WHERE
        mt.production_year >= 2000

    UNION ALL

    SELECT
        ml.linked_movie_id,
        at.title,
        at.production_year,
        mh.level + 1
    FROM
        MovieHierarchy mh
    JOIN movie_link ml ON mh.movie_id = ml.movie_id
    JOIN aka_title at ON ml.linked_movie_id = at.id
    WHERE
        at.production_year >= 2000
)

SELECT
    m.title AS main_movie,
    m.production_year AS main_year,
    m.level,
    COUNT(DISTINCT c.person_id) AS total_cast,
    STRING_AGG(DISTINCT ak.name, ', ') AS actor_names,
    SUM(CASE WHEN mk.keyword IS NOT NULL THEN 1 ELSE 0 END) AS num_keywords,
    COALESCE(SUM(CAST(mi.info AS integer)), 0) AS total_info_entries
FROM
    MovieHierarchy m
LEFT JOIN complete_cast cc ON m.movie_id = cc.movie_id
LEFT JOIN cast_info c ON cc.subject_id = c.person_id
LEFT JOIN movie_keyword mk ON m.movie_id = mk.movie_id
LEFT JOIN aka_name ak ON c.person_id = ak.person_id
LEFT JOIN movie_info mi ON m.movie_id = mi.movie_id
WHERE
    m.level <= 2
GROUP BY
    m.movie_id, m.title, m.production_year, m.level
ORDER BY
    main_year DESC,
    total_cast DESC,
    main_movie;
