
WITH movie_details AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        STRING_AGG(DISTINCT ak.name ORDER BY ak.name) AS aka_names,
        STRING_AGG(DISTINCT CONCAT(c.person_role_id, ': ', p.name) ORDER BY c.nr_order) AS cast_details,
        t.id AS movie_id
    FROM 
        aka_title ak
    JOIN 
        title t ON ak.movie_id = t.id
    JOIN 
        cast_info c ON t.id = c.movie_id
    JOIN 
        aka_name p ON c.person_id = p.person_id
    WHERE 
        t.production_year BETWEEN 2000 AND 2023
        AND ak.kind_id IN (SELECT id FROM kind_type WHERE kind ILIKE '%drama%')
    GROUP BY 
        t.title, t.production_year, t.id
),
company_info AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT c.name ORDER BY c.name) AS companies,
        STRING_AGG(DISTINCT ct.kind ORDER BY ct.kind) AS company_types
    FROM 
        movie_companies mc
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    GROUP BY 
        mc.movie_id
),
keyword_summary AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(DISTINCT k.keyword ORDER BY k.keyword) AS keywords
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
)
SELECT 
    md.movie_title,
    md.production_year,
    md.aka_names,
    md.cast_details,
    ci.companies,
    ci.company_types,
    ks.keywords
FROM 
    movie_details md
LEFT JOIN 
    company_info ci ON md.movie_id = ci.movie_id
LEFT JOIN 
    keyword_summary ks ON md.movie_id = ks.movie_id
ORDER BY 
    md.production_year DESC, md.movie_title;
