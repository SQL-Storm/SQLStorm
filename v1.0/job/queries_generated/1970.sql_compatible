
WITH RankedTitles AS (
    SELECT 
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
CastSummary AS (
    SELECT 
        c.movie_id,
        COUNT(DISTINCT c.person_id) AS total_cast,
        STRING_AGG(DISTINCT ka.name, ', ') AS cast_names
    FROM 
        cast_info c
    JOIN 
        aka_name ka ON c.person_id = ka.person_id
    GROUP BY 
        c.movie_id
),
MovieDetails AS (
    SELECT 
        mt.title,
        mt.production_year,
        cs.total_cast,
        cs.cast_names,
        mci.note AS company_note
    FROM 
        RankedTitles mt
    LEFT JOIN 
        CastSummary cs ON mt.title = cs.movie_id
    LEFT JOIN 
        movie_companies mci ON mt.title = mci.movie_id
)
SELECT 
    md.title,
    md.production_year,
    COALESCE(md.total_cast, 0) AS total_cast,
    COALESCE(md.cast_names, 'No Cast') AS cast_names,
    CASE 
        WHEN md.company_note IS NULL THEN 'Independent'
        ELSE md.company_note 
    END AS company_type
FROM 
    MovieDetails md
WHERE 
    md.rank <= 5 
    AND (md.production_year > 2000 OR md.company_note IS NOT NULL)
ORDER BY 
    md.production_year DESC, md.title;
