
WITH RankedMovies AS (
    SELECT 
        at.title,
        at.production_year,
        COUNT(DISTINCT cc.person_id) AS total_cast,
        DENSE_RANK() OVER (PARTITION BY at.production_year ORDER BY COUNT(DISTINCT cc.person_id) DESC) AS rank
    FROM 
        aka_title at
    LEFT JOIN 
        complete_cast c ON at.id = c.movie_id
    LEFT JOIN 
        cast_info cc ON c.subject_id = cc.person_id
    GROUP BY 
        at.title, at.production_year
),
TopMovies AS (
    SELECT 
        title,
        production_year,
        total_cast
    FROM 
        RankedMovies
    WHERE 
        rank <= 5
),
ActorInfo AS (
    SELECT 
        ak.name AS actor_name,
        tm.title,
        tm.production_year
    FROM 
        aka_name ak
    JOIN 
        cast_info ci ON ak.person_id = ci.person_id
    JOIN 
        complete_cast cc ON ci.movie_id = cc.movie_id
    JOIN 
        TopMovies tm ON cc.movie_id = tm.title AND ci.movie_id = tm.title 
)
SELECT 
    tm.title,
    tm.production_year,
    STRING_AGG(ai.actor_name, ', ') AS actors
FROM 
    TopMovies tm
LEFT JOIN 
    ActorInfo ai ON tm.title = ai.title AND tm.production_year = ai.production_year
GROUP BY 
    tm.title, tm.production_year
ORDER BY 
    tm.production_year DESC, tm.title ASC;
