
SELECT 
    a.name AS aka_name,
    t.title AS movie_title,
    p.name AS person_name,
    rt.role AS person_role,
    c.note AS cast_note,
    t.production_year
FROM 
    aka_name a
JOIN 
    cast_info c ON a.person_id = c.person_id
JOIN 
    title t ON c.movie_id = t.id
JOIN 
    role_type rt ON c.role_id = rt.id
JOIN 
    company_name cn ON c.movie_id = cn.id
WHERE 
    t.production_year > 2000
GROUP BY 
    a.name, t.title, p.name, rt.role, c.note, t.production_year
ORDER BY 
    t.production_year DESC, 
    a.name;
