WITH movie_details AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        GROUP_CONCAT(DISTINCT c.name) AS cast_names,
        m.name AS production_company,
        i.info AS movie_info
    FROM 
        aka_title t
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name m ON mc.company_id = m.id
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    LEFT JOIN 
        movie_info mi ON t.id = mi.movie_id
    LEFT JOIN 
        info_type it ON mi.info_type_id = it.id
    WHERE 
        t.production_year > 2000
    GROUP BY 
        t.id, m.name, i.info
),
keyword_aggregation AS (
    SELECT 
        m.movie_id,
        GROUP_CONCAT(DISTINCT k.keyword) AS keywords
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        movie_details m ON mk.movie_id = m.movie_id
    GROUP BY 
        m.movie_id
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    md.cast_names,
    md.production_company,
    md.movie_info,
    ka.keywords
FROM 
    movie_details md
LEFT JOIN 
    keyword_aggregation ka ON md.movie_id = ka.movie_id
ORDER BY 
    md.production_year DESC, md.title;