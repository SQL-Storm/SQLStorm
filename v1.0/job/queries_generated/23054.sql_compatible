
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC, t.title) AS ranking
    FROM
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
FilteredActors AS (
    SELECT 
        a.person_id,
        a.name,
        COUNT(DISTINCT c.movie_id) AS movie_count
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    WHERE 
        a.name IS NOT NULL
    GROUP BY 
        a.person_id, a.name
    HAVING 
        COUNT(DISTINCT c.movie_id) > 5
),
CompanyDetails AS (
    SELECT 
        c.name AS company_name,
        ct.kind AS company_type,
        mc.movie_id
    FROM 
        movie_companies mc
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    WHERE
        ct.kind IN ('Distributor', 'Production')
)
SELECT 
    rm.movie_id,
    rm.title,
    rm.production_year,
    fa.name AS actor_name,
    fa.movie_count,
    cd.company_name,
    cd.company_type
FROM 
    RankedMovies rm
LEFT JOIN 
    FilteredActors fa ON rm.movie_id IN (SELECT movie_id FROM cast_info WHERE person_id = fa.person_id)
LEFT JOIN 
    CompanyDetails cd ON rm.movie_id = cd.movie_id
WHERE 
    rm.ranking <= 5
    AND (fa.movie_count IS NULL OR fa.movie_count > 10)
ORDER BY 
    rm.production_year DESC, 
    rm.title;
