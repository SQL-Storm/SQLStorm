
WITH RankedTitles AS (
    SELECT 
        t.id AS title_id, 
        t.title, 
        t.production_year, 
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS year_rank
    FROM 
        title t
    WHERE 
        t.production_year IS NOT NULL
),
ActorMovieCounts AS (
    SELECT 
        ci.person_id, 
        COUNT(DISTINCT ci.movie_id) AS movie_count
    FROM 
        cast_info ci
    GROUP BY 
        ci.person_id
),
FilteredActors AS (
    SELECT 
        a.id AS actor_id, 
        a.name 
    FROM 
        aka_name a
    JOIN 
        ActorMovieCounts amc ON a.person_id = amc.person_id
    WHERE 
        amc.movie_count > 5
),
AverageMovieInfo AS (
    SELECT 
        m.id AS movie_id, 
        AVG(LENGTH(mi.info)) AS avg_info_length
    FROM 
        movie_info mi
    JOIN 
        title m ON mi.movie_id = m.id
    GROUP BY 
        m.id
)
SELECT 
    r.title_id, 
    r.title, 
    r.production_year, 
    fa.name AS actor_name, 
    amc.movie_count, 
    ami.avg_info_length
FROM 
    RankedTitles r
LEFT JOIN 
    cast_info ci ON r.title_id = ci.movie_id
LEFT JOIN 
    FilteredActors fa ON ci.person_id = fa.actor_id
LEFT JOIN 
    AverageMovieInfo ami ON r.title_id = ami.movie_id
WHERE 
    r.year_rank <= 3 
ORDER BY 
    r.production_year DESC, 
    fa.name ASC NULLS LAST;
