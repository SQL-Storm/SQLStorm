
WITH MovieDetails AS (
    SELECT 
        m.id AS movie_id,
        m.title AS movie_title,
        m.production_year,
        STRING_AGG(DISTINCT a.name ORDER BY a.name) AS actor_names,
        STRING_AGG(DISTINCT k.keyword ORDER BY k.keyword) AS movie_keywords,
        STRING_AGG(DISTINCT c.kind ORDER BY c.kind) AS company_types,
        SUM(CASE WHEN mc.note IS NOT NULL THEN 1 ELSE 0 END) AS cast_note_count
    FROM 
        title m
    JOIN 
        aka_title a ON m.id = a.movie_id
    JOIN 
        cast_info ci ON m.id = ci.movie_id
    JOIN 
        aka_name an ON ci.person_id = an.person_id
    LEFT JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        movie_companies mc ON m.id = mc.movie_id
    LEFT JOIN 
        company_type c ON mc.company_type_id = c.id
    WHERE 
        m.production_year >= 2000
    GROUP BY 
        m.id, m.title, m.production_year 
),
TopMovies AS (
    SELECT 
        movie_id,
        movie_title,
        production_year,
        actor_names,
        movie_keywords,
        company_types,
        cast_note_count,
        RANK() OVER (ORDER BY production_year DESC, cast_note_count DESC) AS rank
    FROM 
        MovieDetails
)
SELECT 
    rank,
    movie_title,
    production_year,
    actor_names,
    movie_keywords,
    company_types,
    cast_note_count
FROM 
    TopMovies
WHERE 
    rank <= 10
ORDER BY 
    rank;
