
WITH RECURSIVE ranked_titles AS (
    SELECT 
        t.title, 
        t.production_year, 
        t.kind_id,
        ROW_NUMBER() OVER (PARTITION BY t.kind_id ORDER BY t.production_year DESC) AS rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
), 
movie_keywords AS (
    SELECT 
        m.movie_id, 
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords
    FROM 
        movie_keyword m
    JOIN 
        keyword k ON m.keyword_id = k.id
    GROUP BY 
        m.movie_id
), 
complete_casts AS (
    SELECT 
        cc.movie_id, 
        COUNT(DISTINCT cc.subject_id) AS total_cast
    FROM 
        complete_cast cc
    GROUP BY 
        cc.movie_id
), 
filtered_casts AS (
    SELECT 
        ci.movie_id, 
        COUNT(DISTINCT ci.person_id) AS lead_cast,
        COUNT(DISTINCT ci.person_id) AS supporting_cast
    FROM 
        cast_info ci
    JOIN 
        role_type r ON ci.role_id = r.id
    GROUP BY 
        ci.movie_id
)

SELECT 
    t.title, 
    t.production_year,
    COALESCE(c.total_cast, 0) AS total_cast,
    COALESCE(fk.lead_cast, 0) AS lead_cast,
    COALESCE(fk.supporting_cast, 0) AS supporting_cast,
    COALESCE(mk.keywords, '') AS keywords,
    COALESCE(k.kind, 'Unknown') AS kind
FROM 
    ranked_titles t
LEFT JOIN 
    complete_casts c ON t.title = c.movie_id
LEFT JOIN 
    filtered_casts fk ON t.title = fk.movie_id
LEFT JOIN 
    movie_keywords mk ON t.title = mk.movie_id
LEFT JOIN 
    kind_type k ON t.kind_id = k.id
WHERE 
    t.rank <= 10
AND 
    (t.production_year < 2000 OR mk.keywords LIKE '%drama%')
ORDER BY 
    t.production_year DESC, 
    fk.lead_cast DESC;
