WITH RankedMovies AS (
    SELECT 
        at.title,
        at.production_year,
        COUNT(c.person_id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY at.production_year ORDER BY COUNT(c.person_id) DESC) AS rank
    FROM 
        aka_title at
    LEFT JOIN 
        cast_info c ON at.id = c.movie_id
    GROUP BY 
        at.id, at.title, at.production_year
), TopActors AS (
    SELECT 
        ak.name,
        COUNT(DISTINCT c.movie_id) AS movie_count
    FROM 
        aka_name ak
    INNER JOIN 
        cast_info c ON ak.person_id = c.person_id
    GROUP BY 
        ak.id, ak.name
    HAVING 
        COUNT(DISTINCT c.movie_id) > 5
), MovieDetails AS (
    SELECT 
        at.id AS movie_id,
        at.title,
        COALESCE(STRING_AGG(DISTINCT ak.name, ', '), 'No Cast') AS cast_names
    FROM 
        aka_title at
    LEFT JOIN 
        cast_info c ON at.id = c.movie_id
    LEFT JOIN 
        aka_name ak ON c.person_id = ak.person_id
    GROUP BY 
        at.id, at.title
)
SELECT 
    rm.title,
    rm.production_year,
    rm.cast_count,
    COALESCE(ta.movie_count, 0) AS actor_movies,
    md.cast_names
FROM 
    RankedMovies rm
LEFT JOIN 
    TopActors ta ON rm.rank = 1 
LEFT JOIN 
    MovieDetails md ON rm.title = md.title
WHERE 
    rm.cast_count > 0
ORDER BY 
    rm.production_year DESC, rm.cast_count DESC;