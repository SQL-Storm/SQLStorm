
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT c.person_id) DESC) AS rank
    FROM 
        title t
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    JOIN 
        cast_info c ON cc.movie_id = c.movie_id
    GROUP BY 
        t.id, t.title, t.production_year
),
FilteredMovies AS (
    SELECT 
        movie_id, title, production_year 
    FROM 
        RankedMovies 
    WHERE 
        rank <= 5
)
SELECT 
    f.title,
    f.production_year,
    COUNT(DISTINCT c.person_id) AS total_cast,
    STRING_AGG(DISTINCT a.name, ', ') AS cast_names,
    COUNT(DISTINCT m.company_id) AS total_companies,
    STRING_AGG(DISTINCT co.name, ', ') AS production_companies
FROM 
    FilteredMovies f
LEFT JOIN 
    complete_cast cc ON f.movie_id = cc.movie_id
LEFT JOIN 
    cast_info c ON cc.movie_id = c.movie_id
LEFT JOIN 
    movie_companies m ON f.movie_id = m.movie_id
LEFT JOIN 
    company_name co ON m.company_id = co.id
LEFT JOIN 
    aka_title a ON f.movie_id = a.movie_id 
GROUP BY 
    f.movie_id, f.title, f.production_year
ORDER BY 
    f.production_year DESC, total_cast DESC;
