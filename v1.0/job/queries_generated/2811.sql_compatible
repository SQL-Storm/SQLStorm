
WITH RankedMovies AS (
    SELECT 
        t.title, 
        t.production_year,
        COUNT(c.person_id) AS num_cast,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(c.person_id) DESC) AS rank
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    GROUP BY 
        t.title,
        t.production_year
),
GenreKeywords AS (
    SELECT DISTINCT
        tk.movie_id,
        k.keyword
    FROM 
        movie_keyword tk
    INNER JOIN 
        keyword k ON tk.keyword_id = k.id
),
CompanyStats AS (
    SELECT 
        mc.movie_id, 
        COUNT(DISTINCT co.id) AS num_companies,
        MAX(co.country_code) AS max_country_code
    FROM 
        movie_companies mc
    LEFT JOIN 
        company_name co ON mc.company_id = co.id
    GROUP BY 
        mc.movie_id
),
PrimaryActors AS (
    SELECT 
        c.movie_id, 
        a.name AS actor_name,
        ROW_NUMBER() OVER (PARTITION BY c.movie_id ORDER BY c.nr_order) AS actor_rank
    FROM 
        cast_info c 
    INNER JOIN 
        aka_name a ON c.person_id = a.person_id
)
SELECT 
    rm.title,
    rm.production_year,
    rm.num_cast,
    ps.actor_name,
    gs.keyword,
    cs.num_companies,
    cs.max_country_code
FROM 
    RankedMovies rm
LEFT JOIN 
    PrimaryActors ps ON rm.title = ps.movie_id AND ps.actor_rank = 1
LEFT JOIN 
    GenreKeywords gs ON rm.title = gs.movie_id
LEFT JOIN 
    CompanyStats cs ON rm.title = cs.movie_id
WHERE 
    rm.rank <= 5 AND 
    rm.production_year IS NOT NULL
ORDER BY 
    rm.production_year DESC, rm.num_cast DESC;
