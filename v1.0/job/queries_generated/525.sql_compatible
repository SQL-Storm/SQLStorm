
WITH RankedMovies AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT c.person_id) OVER (PARTITION BY t.id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY t.kind_id ORDER BY t.production_year DESC) AS rank
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    WHERE 
        t.production_year IS NOT NULL
),
CompanyMovieInfo AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ') AS companies
    FROM 
        movie_companies mc
    LEFT JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        mc.movie_id
),
FilteredMovies AS (
    SELECT 
        rm.title_id,
        rm.title,
        rm.production_year,
        rm.cast_count,
        cm.companies
    FROM 
        RankedMovies rm
    LEFT JOIN 
        CompanyMovieInfo cm ON rm.title_id = cm.movie_id
    WHERE 
        rm.cast_count > 0 AND rm.rank <= 10
)
SELECT 
    fm.title AS Movie_Title,
    fm.production_year AS Production_Year,
    COALESCE(fm.companies, 'No Companies Available') AS Companies,
    fm.cast_count AS Number_of_Cast,
    (SELECT AVG(p.info) FROM person_info p WHERE p.person_id IN (SELECT DISTINCT c.person_id FROM cast_info c WHERE c.movie_id = fm.title_id)) AS Avg_Age_Of_Cast
FROM 
    FilteredMovies fm
GROUP BY 
    fm.title, fm.production_year, fm.cast_count, fm.companies
ORDER BY 
    fm.production_year DESC;
