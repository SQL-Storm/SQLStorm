WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT c.person_id) AS total_cast,
        STRING_AGG(DISTINCT ak.name, ', ') AS aka_names
    FROM 
        aka_title ak
    JOIN 
        title t ON ak.movie_id = t.id
    JOIN 
        cast_info c ON t.id = c.movie_id
    GROUP BY 
        t.id, t.title, t.production_year
),
movie_details AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        rm.total_cast,
        m.name AS company_name,
        m.note AS company_note
    FROM 
        ranked_movies rm
    JOIN 
        movie_companies mc ON rm.movie_id = mc.movie_id
    JOIN 
        company_name m ON mc.company_id = m.id
    WHERE 
        m.country_code = 'USA'
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    md.total_cast,
    md.company_name,
    md.company_note,
    COALESCE(mi.info, 'No additional info') AS movie_info
FROM 
    movie_details md
LEFT JOIN 
    movie_info mi ON md.movie_id = mi.movie_id 
WHERE 
    md.total_cast > 5
ORDER BY 
    md.production_year DESC, 
    md.total_cast DESC;