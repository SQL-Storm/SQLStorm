
SELECT 
    n.name AS actor_name,
    t.title AS movie_title,
    c.kind AS role_kind,
    mi.production_year,
    STRING_AGG(DISTINCT kw.keyword, ', ') AS keywords,
    COUNT(DISTINCT co.name) AS production_companies
FROM 
    aka_name n
JOIN 
    cast_info ci ON n.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
JOIN 
    role_type c ON ci.role_id = c.id
JOIN 
    movie_keyword mk ON t.id = mk.movie_id
JOIN 
    keyword kw ON mk.keyword_id = kw.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name co ON mc.company_id = co.id
JOIN 
    movie_info mi ON t.id = mi.movie_id AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'summary')
WHERE 
    n.name IS NOT NULL 
GROUP BY 
    n.name, t.title, c.kind, mi.production_year
HAVING 
    COUNT(DISTINCT kw.id) > 5
ORDER BY 
    mi.production_year DESC, actor_name;
