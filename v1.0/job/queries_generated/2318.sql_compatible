
WITH movie_details AS (
    SELECT 
        t.title, 
        t.production_year, 
        c.company_id, 
        c.note AS company_note, 
        k.keyword AS movie_keyword, 
        ROW_NUMBER() OVER (PARTITION BY t.id ORDER BY c.company_id) AS company_rank
    FROM 
        aka_title t
    LEFT JOIN 
        movie_companies c ON t.id = c.movie_id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        t.production_year >= 2000
),
cast_details AS (
    SELECT 
        ca.movie_id,
        a.name AS actor_name, 
        r.role AS role_type, 
        ROW_NUMBER() OVER (PARTITION BY ca.movie_id ORDER BY ca.nr_order) AS actor_rank
    FROM 
        cast_info ca
    JOIN 
        aka_name a ON ca.person_id = a.person_id
    JOIN 
        role_type r ON ca.role_id = r.id
)
SELECT 
    md.title,
    md.production_year,
    cd.actor_name,
    cd.role_type,
    md.movie_keyword,
    md.company_note,
    CASE 
        WHEN md.company_rank IS NULL THEN 'No Company'
        ELSE 'Company Available'
    END AS company_availability
FROM 
    movie_details md
FULL OUTER JOIN 
    cast_details cd ON md.id = cd.movie_id
WHERE 
    (md.company_rank <= 5 OR cd.actor_rank <= 3)
    AND (md.movie_keyword IS NOT NULL OR cd.role_type IS NOT NULL)
ORDER BY 
    md.production_year DESC, 
    md.title ASC, 
    cd.actor_rank
LIMIT 100;
