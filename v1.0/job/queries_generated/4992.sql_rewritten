WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id, 
        t.title, 
        t.production_year, 
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS rank_year
    FROM 
        aka_title t
    WHERE 
        t.kind_id IN (1, 2, 3) 
),
NegativeKeywords AS (
    SELECT 
        kw.keyword
    FROM 
        keyword kw
    WHERE 
        kw.keyword LIKE '%horror%' OR kw.keyword LIKE '%thriller%'
),
CompanyInfo AS (
    SELECT 
        mc.movie_id, 
        cn.name AS company_name, 
        ct.kind AS company_type
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
),
MovieCast AS (
    SELECT 
        c.movie_id, 
        a.name AS actor_name, 
        COUNT(*) AS role_count
    FROM 
        cast_info c
    JOIN 
        aka_name a ON c.person_id = a.person_id
    GROUP BY 
        c.movie_id, a.name
)
SELECT 
    rm.movie_id, 
    rm.title, 
    rm.production_year,
    COALESCE(ci.company_name, 'Unknown') AS company_name,
    COALESCE(mk.keyword, 'No Keywords') AS movie_keyword,
    mc.actor_name,
    mc.role_count
FROM 
    RankedMovies rm
LEFT JOIN 
    CompanyInfo ci ON rm.movie_id = ci.movie_id
LEFT JOIN 
    MovieKeyword mk ON rm.movie_id = mk.movie_id
LEFT JOIN 
    MovieCast mc ON rm.movie_id = mc.movie_id
WHERE 
    rm.rank_year = 1 
    AND (mk.keyword IS NULL OR mk.keyword NOT IN (SELECT keyword FROM NegativeKeywords))
ORDER BY 
    rm.production_year DESC, 
    mc.role_count DESC;