WITH RankedMovies AS (
    SELECT 
        t.title, 
        t.production_year, 
        a.name AS actor_name, 
        c.kind AS role_type,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS year_rank
    FROM 
        aka_title t
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    JOIN 
        role_type c ON ci.role_id = c.id
),
MovieStatistics AS (
    SELECT 
        production_year,
        COUNT(*) AS total_movies,
        COUNT(DISTINCT actor_name) AS total_actors,
        STRING_AGG(DISTINCT actor_name, ', ') AS actor_list
    FROM 
        RankedMovies
    WHERE 
        year_rank <= 5 
    GROUP BY 
        production_year
    ORDER BY 
        production_year DESC
)
SELECT 
    ms.production_year,
    ms.total_movies,
    ms.total_actors,
    ms.actor_list,
    mt.genre_list
FROM 
    MovieStatistics ms
LEFT JOIN (
    SELECT 
        movie_id, 
        STRING_AGG(DISTINCT keyword.keyword, ', ') AS genre_list
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        movie_id
) mt ON mt.movie_id IN (
    SELECT id FROM aka_title WHERE production_year = ms.production_year
)
WHERE 
    ms.total_movies > 0
ORDER BY 
    ms.production_year DESC;