
WITH RankedTitles AS (
    SELECT 
        a.name AS actor_name,
        t.title AS movie_title,
        t.production_year,
        ROW_NUMBER() OVER(PARTITION BY a.id ORDER BY t.production_year DESC) AS rnk
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    JOIN 
        aka_title t ON c.movie_id = t.movie_id
    WHERE 
        a.name IS NOT NULL
        AND t.production_year IS NOT NULL
        AND t.kind_id IN (SELECT id FROM kind_type WHERE kind = 'feature')
),
CompanyMovies AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ') AS companies
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    WHERE 
        cn.country_code IS NOT NULL
    GROUP BY 
        mc.movie_id
),
ActorMovies AS (
    SELECT 
        rt.actor_name,
        rt.movie_title,
        rt.production_year,
        cm.companies
    FROM 
        RankedTitles rt
    LEFT JOIN 
        CompanyMovies cm ON rt.movie_title = cm.movie_id
    WHERE 
        rt.rnk <= 3
)
SELECT 
    actor_name,
    movie_title,
    production_year,
    COALESCE(companies, 'No companies related') AS companies_involved
FROM 
    ActorMovies
ORDER BY 
    production_year DESC, actor_name;
