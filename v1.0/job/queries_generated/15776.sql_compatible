
SELECT 
    t.title, 
    a.name AS actor_name, 
    c.nr_order, 
    ct.kind AS role 
FROM 
    title t 
JOIN 
    cast_info c ON t.id = c.movie_id 
JOIN 
    aka_name a ON c.person_id = a.person_id 
JOIN 
    role_type ct ON c.role_id = ct.id 
WHERE 
    t.production_year >= 2000 
GROUP BY 
    t.title, a.name, c.nr_order, ct.kind
ORDER BY 
    t.title, c.nr_order;
