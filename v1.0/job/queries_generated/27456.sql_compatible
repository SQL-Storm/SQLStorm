
WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT ci.person_id) AS cast_count,
        STRING_AGG(DISTINCT a.name, ', ') AS actors,
        RANK() OVER (PARTITION BY t.kind_id ORDER BY COUNT(DISTINCT ci.person_id) DESC) AS rank_within_kind
    FROM 
        aka_title t
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    WHERE 
        t.production_year >= 2000
    GROUP BY 
        t.id, t.title, t.production_year, t.kind_id
),
top_rated_movies AS (
    SELECT 
        m.movie_id, 
        m.title, 
        m.production_year, 
        m.cast_count,
        m.actors,
        ki.kind AS movie_kind
    FROM 
        ranked_movies m
    JOIN 
        kind_type ki ON m.movie_id = ki.id
    WHERE 
        m.rank_within_kind <= 5
)
SELECT 
    t.title,
    t.production_year,
    t.actors,
    ct.kind AS company_type,
    STRING_AGG(DISTINCT c.name ORDER BY c.name) AS companies
FROM 
    top_rated_movies t
LEFT JOIN 
    movie_companies mc ON t.movie_id = mc.movie_id
LEFT JOIN 
    company_name c ON mc.company_id = c.id
LEFT JOIN 
    company_type ct ON mc.company_type_id = ct.id
GROUP BY 
    t.movie_id, t.title, t.production_year, t.actors, ct.kind
ORDER BY 
    t.production_year DESC, t.cast_count DESC;
