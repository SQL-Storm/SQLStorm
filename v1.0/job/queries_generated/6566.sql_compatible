
WITH MovieDetails AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        STRING_AGG(DISTINCT ak.name, ', ') AS aliases,
        STRING_AGG(DISTINCT p.name, ', ') AS cast_names,
        COUNT(DISTINCT k.keyword) AS keyword_count
    FROM 
        aka_title AS t
    JOIN 
        title AS tt ON tt.id = t.movie_id
    LEFT JOIN 
        complete_cast AS cc ON cc.movie_id = t.movie_id
    LEFT JOIN 
        cast_info AS ci ON ci.movie_id = cc.movie_id
    LEFT JOIN 
        aka_name AS ak ON ak.person_id = ci.person_id
    LEFT JOIN 
        movie_keyword AS mk ON mk.movie_id = t.movie_id
    LEFT JOIN 
        keyword AS k ON k.id = mk.keyword_id
    LEFT JOIN 
        movie_companies AS mc ON mc.movie_id = t.movie_id
    LEFT JOIN 
        company_name AS cn ON cn.id = mc.company_id
    WHERE 
        t.production_year >= 2000
    GROUP BY 
        t.title, t.production_year
),
AggregateData AS (
    SELECT 
        production_year,
        COUNT(*) AS total_movies,
        COUNT(DISTINCT movie_title) AS unique_titles,
        SUM(keyword_count) AS total_keywords,
        STRING_AGG(DISTINCT movie_title, ', ') AS all_movie_titles
    FROM 
        MovieDetails
    GROUP BY 
        production_year
)
SELECT 
    production_year,
    total_movies,
    unique_titles,
    total_keywords,
    all_movie_titles
FROM 
    AggregateData
ORDER BY 
    production_year DESC;
