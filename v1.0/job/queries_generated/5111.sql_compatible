
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    c.nr_order AS cast_order,
    co.name AS company_name,
    m.production_year,
    k.keyword AS movie_keyword,
    i.info AS movie_info
FROM 
    aka_name a
JOIN 
    cast_info c ON a.person_id = c.person_id
JOIN 
    title t ON c.movie_id = t.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name co ON mc.company_id = co.id
JOIN 
    movie_keyword mk ON t.id = mk.movie_id
JOIN 
    keyword k ON mk.keyword_id = k.id
JOIN 
    movie_info m_info ON t.id = m_info.movie_id
JOIN 
    info_type i_type ON m_info.info_type_id = i_type.id
JOIN 
    movie_info m ON t.id = m.movie_id
WHERE 
    m_info.info_type_id IN (SELECT id FROM info_type WHERE info = 'rating')
    AND m.production_year BETWEEN 2000 AND 2020
GROUP BY 
    a.name, t.title, c.nr_order, co.name, m.production_year, k.keyword, i.info
ORDER BY 
    m.production_year DESC, a.name;
