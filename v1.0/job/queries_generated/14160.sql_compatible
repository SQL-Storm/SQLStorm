
SELECT 
    a.name AS aka_name,
    t.title AS movie_title,
    c.note AS cast_note,
    ct.kind AS comp_cast_kind,
    cn.name AS company_name,
    mt.kind AS movie_type,
    i.info AS movie_info,
    k.keyword AS movie_keyword,
    rl.role AS role_type
FROM 
    aka_name AS a
JOIN 
    cast_info AS c ON a.person_id = c.person_id
JOIN 
    aka_title AS t ON c.movie_id = t.movie_id
JOIN 
    complete_cast AS cc ON t.id = cc.movie_id
JOIN 
    movie_companies AS mc ON cc.movie_id = mc.movie_id
JOIN 
    company_name AS cn ON mc.company_id = cn.id
JOIN 
    company_type AS ct ON mc.company_type_id = ct.id
JOIN 
    movie_info AS i ON cc.movie_id = i.movie_id
JOIN 
    movie_keyword AS mk ON mk.movie_id = cc.movie_id
JOIN 
    keyword AS k ON mk.keyword_id = k.id
JOIN 
    role_type AS rl ON c.role_id = rl.id
JOIN 
    title AS mt ON t.id = mt.id
WHERE 
    t.production_year > 2000
GROUP BY 
    a.name,
    t.title,
    c.note,
    ct.kind,
    cn.name,
    mt.kind,
    i.info,
    k.keyword,
    rl.role
ORDER BY 
    t.production_year DESC, a.name;
