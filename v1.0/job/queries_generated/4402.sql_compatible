
WITH MovieDetails AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        COUNT(DISTINCT ci.person_id) AS cast_count,
        STRING_AGG(DISTINCT ak.name, ', ') AS actor_names
    FROM 
        aka_title t
        LEFT JOIN cast_info ci ON t.id = ci.movie_id
        LEFT JOIN aka_name ak ON ci.person_id = ak.person_id
    WHERE 
        t.production_year IS NOT NULL
    GROUP BY 
        t.title, t.production_year
), 
CompanyInfo AS (
    SELECT 
        m.movie_id,
        c.name AS company_name,
        MAX(CASE WHEN ct.kind = 'Production' THEN 1 ELSE 0 END) AS is_production_company
    FROM 
        movie_companies m
        JOIN company_name c ON m.company_id = c.id
        JOIN company_type ct ON m.company_type_id = ct.id
    GROUP BY 
        m.movie_id, c.name
),
MovieKeywords AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword mk
        JOIN keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
)
SELECT 
    md.movie_title,
    md.production_year,
    COALESCE(md.cast_count, 0) AS total_cast,
    COALESCE(ci.company_name, 'Unknown') AS company_name,
    COALESCE(mk.keywords, 'No Keywords') AS keywords
FROM 
    MovieDetails md
    LEFT JOIN CompanyInfo ci ON md.movie_title = ci.movie_id
    LEFT JOIN MovieKeywords mk ON md.movie_title = mk.movie_id
ORDER BY 
    md.production_year DESC,
    md.cast_count DESC;
