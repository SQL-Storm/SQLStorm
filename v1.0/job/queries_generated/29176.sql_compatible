
WITH RankedMovies AS (
    SELECT 
        m.id AS movie_id,
        m.title AS movie_title,
        m.production_year,
        m.kind_id,
        ROW_NUMBER() OVER (PARTITION BY m.production_year ORDER BY m.title) AS rank
    FROM 
        aka_title m
    WHERE 
        m.production_year IS NOT NULL
),
MovieCast AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT ak.name, ', ' ORDER BY ak.name) AS cast_names,
        COUNT(DISTINCT c.role_id) AS roles_count
    FROM 
        cast_info c
    JOIN 
        aka_name ak ON c.person_id = ak.person_id
    JOIN 
        RankedMovies rm ON c.movie_id = rm.movie_id
    GROUP BY 
        mc.movie_id
),
HighestRatedMovies AS (
    SELECT 
        mv.movie_id,
        mv.movie_title,
        mv.production_year,
        mc.cast_names,
        mc.roles_count,
        k.keyword AS genre
    FROM 
        RankedMovies mv
    JOIN 
        MovieCast mc ON mv.movie_id = mc.movie_id
    JOIN 
        movie_keyword mk ON mv.movie_id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        mv.rank <= 3 
)
SELECT 
    hr.movie_title,
    hr.production_year,
    hr.cast_names,
    hr.roles_count,
    STRING_AGG(DISTINCT hr.genre, ', ') AS genres
FROM 
    HighestRatedMovies hr
GROUP BY 
    hr.movie_title, hr.production_year, hr.cast_names, hr.roles_count
ORDER BY 
    hr.production_year DESC, hr.movie_title ASC;
