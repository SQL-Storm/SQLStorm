
WITH MovieDetails AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        STRING_AGG(DISTINCT ak.name, ', ') AS aka_names,
        STRING_AGG(DISTINCT c.name, ', ') AS company_names,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords 
    FROM title t
    LEFT JOIN aka_title ak ON ak.movie_id = t.id
    LEFT JOIN movie_companies mc ON mc.movie_id = t.id
    LEFT JOIN company_name c ON mc.company_id = c.id
    LEFT JOIN movie_keyword mk ON mk.movie_id = t.id
    LEFT JOIN keyword k ON mk.keyword_id = k.id
    WHERE t.production_year > 2000
    GROUP BY t.id, t.title, t.production_year
),
PersonInfo AS (
    SELECT 
        p.id AS person_id,
        a.name AS actor_name,
        ARRAY_AGG(DISTINCT r.role) AS roles
    FROM cast_info ci
    JOIN name a ON ci.person_id = a.id
    JOIN role_type r ON ci.role_id = r.id
    GROUP BY p.id, a.name
)
SELECT 
    md.movie_title, 
    md.production_year,
    md.aka_names,
    md.company_names,
    md.keywords,
    pi.actor_name,
    pi.roles
FROM MovieDetails md
JOIN PersonInfo pi ON pi.movie_id = md.id
ORDER BY md.production_year DESC, md.movie_title;
