
WITH RECURSIVE movie_hierarchy AS (
    SELECT 
        mt.id AS movie_id, 
        mt.title, 
        mt.production_year, 
        1 AS level
    FROM 
        aka_title mt
    WHERE 
        mt.episode_of_id IS NULL
    UNION ALL
    SELECT 
        m.id, 
        CONCAT('Episode: ', m.title), 
        m.production_year, 
        mh.level + 1
    FROM 
        aka_title m
    JOIN 
        movie_hierarchy mh ON m.episode_of_id = mh.movie_id
),
cast_with_roles AS (
    SELECT 
        c.movie_id,
        a.name AS actor_name,
        r.role AS role
    FROM 
        cast_info c
    JOIN 
        aka_name a ON c.person_id = a.person_id
    JOIN 
        role_type r ON c.role_id = r.id
),
movie_info_summary AS (
    SELECT 
        m.movie_id,
        COUNT(mi.info_type_id) AS info_count,
        STRING_AGG(mi.info, ', ') AS info_list
    FROM 
        movie_info mi
    GROUP BY 
        m.movie_id
),
company_summary AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT c.name, ', ') AS company_names,
        COUNT(DISTINCT mc.company_id) AS company_count
    FROM 
        movie_companies mc
    JOIN 
        company_name c ON mc.company_id = c.id
    GROUP BY 
        mc.movie_id
),
final_summary AS (
    SELECT 
        mh.movie_id,
        mh.title,
        mh.production_year,
        COALESCE(cr.company_names, 'No companies') AS company_names,
        COALESCE(cr.company_count, 0) AS company_count,
        COALESCE(cwr.actor_count, 0) AS actor_count,
        COALESCE(cwr.roles, 'No roles') AS actor_roles,
        mi.info_count,
        mi.info_list
    FROM 
        movie_hierarchy mh
    LEFT JOIN 
        company_summary cr ON mh.movie_id = cr.movie_id
    LEFT JOIN (
        SELECT 
            movie_id,
            COUNT(DISTINCT actor_name) AS actor_count,
            STRING_AGG(DISTINCT role, ', ') AS roles
        FROM 
            cast_with_roles
        GROUP BY 
            movie_id
    ) cwr ON mh.movie_id = cwr.movie_id
    LEFT JOIN 
        movie_info_summary mi ON mh.movie_id = mi.movie_id
)
SELECT 
    movie_id,
    title,
    production_year,
    company_names,
    company_count,
    actor_count,
    actor_roles,
    info_count,
    info_list
FROM 
    final_summary
WHERE 
    production_year >= 2000
ORDER BY 
    production_year DESC, title;
