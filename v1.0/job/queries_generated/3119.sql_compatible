
WITH RankedMovies AS (
    SELECT 
        a.title,
        a.production_year,
        ROW_NUMBER() OVER (PARTITION BY a.production_year ORDER BY COUNT(c.person_id) DESC) AS rank
    FROM 
        aka_title a
    JOIN 
        cast_info c ON a.id = c.movie_id
    GROUP BY 
        a.title, a.production_year
),
AggregatedInfo AS (
    SELECT 
        m.title,
        m.production_year,
        STRING_AGG(DISTINCT p.info || ' (' || p.note || ')', '; ') AS person_info
    FROM 
        movie_info m
    LEFT JOIN 
        person_info p ON m.movie_id = p.person_id
    GROUP BY 
        m.title, m.production_year
),
KeywordCount AS (
    SELECT 
        k.movie_id,
        COUNT(DISTINCT kw.keyword) AS keyword_count
    FROM 
        movie_keyword k
    JOIN 
        keyword kw ON k.keyword_id = kw.id
    GROUP BY 
        k.movie_id
)
SELECT 
    r.title,
    r.production_year,
    COALESCE(a.person_info, 'No Info') AS person_info,
    COALESCE(kc.keyword_count, 0) AS keyword_count
FROM 
    RankedMovies r
LEFT JOIN 
    AggregatedInfo a ON r.title = a.title AND r.production_year = a.production_year
LEFT JOIN 
    KeywordCount kc ON r.title = (SELECT title FROM aka_title WHERE id = kc.movie_id)
WHERE 
    r.rank <= 5
ORDER BY 
    r.production_year DESC, r.rank;
