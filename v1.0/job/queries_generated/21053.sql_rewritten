WITH RankedTitles AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS year_rank
    FROM 
        aka_title t
    WHERE 
        t.kind_id IN (SELECT id FROM kind_type WHERE kind = 'movie') 
        AND t.production_year IS NOT NULL
),
PreferredRoles AS (
    SELECT 
        p.person_id,
        c.role_id,
        COUNT(ci.id) AS role_count
    FROM 
        cast_info ci
    JOIN 
        role_type c ON ci.role_id = c.id
    JOIN 
        aka_name p ON ci.person_id = p.person_id
    GROUP BY 
        p.person_id, c.role_id
    HAVING 
        COUNT(ci.id) > 3
),
PopularCompanies AS (
    SELECT 
        m.movie_id,
        comp.name AS company_name,
        COUNT(m.id) AS movie_count
    FROM 
        movie_companies m
    JOIN 
        company_name comp ON m.company_id = comp.id
    GROUP BY 
        m.movie_id, comp.name
    HAVING 
        COUNT(m.id) > 2
),
MoodDataset AS (
    SELECT 
        t.title,
        CASE 
            WHEN EXISTS (SELECT 1 FROM movie_info mi WHERE mi.movie_id = t.id AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'mood')) 
            THEN 'Known Mood'
            ELSE 'Unknown Mood'
        END AS mood_status
    FROM 
        title t
    WHERE 
        t.production_year < 2000
),
FinalResults AS (
    SELECT 
        rt.title AS movie_title,
        rt.production_year,
        pr.person_id,
        c.role_id,
        pc.company_name,
        md.mood_status
    FROM 
        RankedTitles rt
    LEFT JOIN 
        PreferredRoles pr ON rt.title_id = pr.role_id
    LEFT JOIN 
        PopularCompanies pc ON rt.title_id = pc.movie_id
    LEFT JOIN 
        MoodDataset md ON rt.title = md.title
    WHERE 
        rt.year_rank <= 5 
    ORDER BY 
        rt.production_year, rt.title
)
SELECT 
    movie_title,
    production_year,
    COALESCE(person_id, 'No Role Assigned') AS assigned_person,
    COALESCE(role_id, 'No Role Assigned') AS assigned_role,
    COALESCE(company_name, 'Independent') AS production_company,
    mood_status
FROM 
    FinalResults
WHERE 
    (mood_status = 'Known Mood' OR assigned_person <> 'No Role Assigned')
ORDER BY 
    production_year DESC, movie_title ASC;