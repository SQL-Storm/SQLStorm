
SELECT 
    p.id AS person_id,
    p.name,
    a.title AS movie_title,
    ci.nr_order,
    ct.kind AS company_type,
    mt.info AS movie_info
FROM 
    aka_name a
JOIN 
    cast_info ci ON a.person_id = ci.person_id
JOIN 
    aka_title a_title ON ci.movie_id = a_title.movie_id
JOIN 
    movie_companies mc ON a_title.id = mc.movie_id
JOIN 
    company_type ct ON mc.company_type_id = ct.id
JOIN 
    movie_info mt ON a_title.id = mt.movie_id
JOIN 
    person_info pi ON ci.person_id = pi.person_id
WHERE 
    a.name LIKE 'John%'
GROUP BY 
    p.id, 
    p.name, 
    a.title, 
    ci.nr_order, 
    ct.kind, 
    mt.info
ORDER BY 
    a.name, a_title.title;
