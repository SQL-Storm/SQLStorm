
WITH MovieAndCast AS (
    SELECT 
        m.id AS movie_id, 
        m.title AS movie_title, 
        a.name AS actor_name, 
        c.nr_order AS cast_order,
        p.gender AS actor_gender,
        mt.kind AS movie_kind
    FROM 
        aka_title m
    JOIN 
        cast_info c ON m.id = c.movie_id
    JOIN 
        aka_name a ON c.person_id = a.person_id
    JOIN 
        movie_info mi ON m.id = mi.movie_id
    JOIN 
        info_type it ON mi.info_type_id = it.id
    JOIN 
        kind_type mt ON m.kind_id = mt.id
    JOIN 
        name p ON a.person_id = p.imdb_id
    WHERE 
        m.production_year BETWEEN 2000 AND 2022 
        AND it.info = 'description'
),
AggregatedData AS (
    SELECT 
        movie_id,
        movie_title,
        ARRAY_AGG(CONCAT(actor_name, ' (', actor_gender, ')') ORDER BY cast_order) AS actors,
        COUNT(*) AS total_actors,
        MAX(m.production_year) AS last_year
    FROM 
        MovieAndCast m
    GROUP BY 
        movie_id, movie_title
)
SELECT 
    md.movie_id,
    md.movie_title,
    md.actors,
    md.total_actors,
    md.last_year,
    CASE 
        WHEN md.total_actors > 5 THEN 'Ensemble Cast'
        ELSE 'Limited Cast'
    END AS cast_type
FROM 
    AggregatedData md
ORDER BY 
    md.last_year DESC, 
    md.total_actors DESC
LIMIT 10;
