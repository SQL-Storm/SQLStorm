
WITH RankedMovies AS (
    SELECT 
        at.title,
        at.production_year,
        COUNT(ci.id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY at.production_year ORDER BY COUNT(ci.id) DESC) AS rank
    FROM 
        aka_title at
    LEFT JOIN 
        cast_info ci ON at.id = ci.movie_id
    WHERE 
        at.production_year IS NOT NULL
    GROUP BY 
        at.title, at.production_year
),
RecentMovies AS (
    SELECT 
        title,
        production_year
    FROM 
        RankedMovies
    WHERE 
        rank <= 10
),
MovieKeywords AS (
    SELECT 
        mt.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword mt
    JOIN 
        keyword k ON mt.keyword_id = k.id
    GROUP BY 
        mt.movie_id
)
SELECT 
    rm.title,
    rm.production_year,
    COALESCE(mk.keywords, 'No keywords') AS keywords,
    CASE 
        WHEN rm.cast_count > 5 THEN 'Ensemble Cast'
        WHEN rm.cast_count = 0 THEN 'No Cast'
        ELSE 'Standard Cast'
    END AS cast_type
FROM 
    RecentMovies rm
LEFT JOIN 
    MovieKeywords mk ON rm.title = (SELECT title FROM aka_title WHERE production_year = rm.production_year LIMIT 1)
ORDER BY 
    rm.production_year DESC, rm.title;
