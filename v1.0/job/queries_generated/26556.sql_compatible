
WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        tk.keyword,
        AVG(ci.nr_order) AS avg_order,
        COUNT(DISTINCT c.id) AS cast_count
    FROM 
        aka_title t
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword tk ON mk.keyword_id = tk.id
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        aka_name an ON ci.person_id = an.person_id
    WHERE 
        t.production_year BETWEEN 2000 AND 2023
    GROUP BY 
        t.id, t.title, t.production_year, tk.keyword
    HAVING 
        COUNT(DISTINCT ci.person_id) > 5
),

like_titled_movies AS (
    SELECT 
        t.title AS similar_title,
        COUNT(DISTINCT mc.movie_id) AS similar_movie_count
    FROM 
        ranked_movies rm
    JOIN 
        aka_title t ON t.title LIKE '%' || rm.title || '%'
    JOIN 
        movie_link ml ON t.id = ml.movie_id
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    WHERE 
        t.id != rm.movie_id
    GROUP BY 
        t.title
)

SELECT 
    rm.movie_id,
    rm.title,
    rm.production_year,
    rm.keyword,
    rm.avg_order,
    rm.cast_count,
    ltm.similar_title,
    ltm.similar_movie_count
FROM 
    ranked_movies rm
LEFT JOIN 
    like_titled_movies ltm ON rm.title = ltm.similar_title
ORDER BY 
    rm.production_year DESC, rm.avg_order DESC;
