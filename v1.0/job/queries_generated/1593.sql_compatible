
WITH ranked_movies AS (
    SELECT 
        t.title,
        t.production_year,
        COUNT(DISTINCT c.person_id) AS actor_count,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT c.person_id) DESC) AS year_rank
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    GROUP BY 
        t.id, t.title, t.production_year
),
actor_details AS (
    SELECT 
        a.name, 
        a.imdb_index,
        COUNT(DISTINCT ca.movie_id) AS total_movies,
        STRING_AGG(DISTINCT at.title, ', ') AS movies
    FROM 
        aka_name a
    LEFT JOIN 
        cast_info ca ON a.person_id = ca.person_id
    LEFT JOIN 
        aka_title at ON ca.movie_id = at.id
    WHERE 
        a.name IS NOT NULL
    GROUP BY 
        a.person_id, a.name, a.imdb_index
),
top_movies AS (
    SELECT 
        * 
    FROM 
        ranked_movies 
    WHERE 
        year_rank <= 5
)
SELECT 
    tm.title,
    tm.production_year,
    ad.name,
    ad.imdb_index,
    ad.total_movies,
    ad.movies
FROM 
    top_movies tm
JOIN 
    cast_info ci ON tm.id = ci.movie_id
JOIN 
    actor_details ad ON ci.person_id = ad.person_id
WHERE 
    ad.total_movies > 1
ORDER BY 
    tm.production_year DESC, 
    tm.actor_count DESC;
