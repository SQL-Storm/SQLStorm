
WITH RankedTitles AS (
    SELECT 
        a.id AS aka_id,
        a.name AS aka_name,
        t.title AS movie_title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY a.person_id ORDER BY t.production_year DESC) AS rank
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    JOIN 
        aka_title t ON c.movie_id = t.movie_id
    WHERE 
        a.name IS NOT NULL AND
        t.kind_id IN (SELECT id FROM kind_type WHERE kind = 'movie')
),
TitleInfo AS (
    SELECT 
        r.aka_id,
        r.aka_name,
        r.movie_title,
        r.production_year,
        COUNT(mk.keyword_id) AS keyword_count,
        STRING_AGG(mk.keyword, ', ') AS keywords,
        r.rank
    FROM 
        RankedTitles r
    LEFT JOIN 
        movie_keyword mk ON r.aka_id = mk.movie_id
    GROUP BY 
        r.aka_id, r.aka_name, r.movie_title, r.production_year, r.rank
)
SELECT 
    ti.aka_name,
    ti.movie_title,
    ti.production_year,
    ti.keyword_count,
    ti.keywords
FROM 
    TitleInfo ti
WHERE 
    ti.rank = 1 
    AND ti.keyword_count > 2
ORDER BY 
    ti.production_year DESC, ti.aka_name;
