
WITH RankedMovies AS (
    SELECT 
        a.title,
        a.production_year,
        a.kind_id,
        a.id AS movie_id,
        ROW_NUMBER() OVER (PARTITION BY a.kind_id ORDER BY a.production_year DESC) AS rank
    FROM 
        aka_title a
    JOIN 
        movie_companies mc ON mc.movie_id = a.id
    WHERE 
        mc.company_type_id = (SELECT id FROM company_type WHERE kind = 'Production')
),
TopMovies AS (
    SELECT 
        rm.title,
        rm.production_year,
        kt.kind AS movie_kind,
        COUNT(DISTINCT ca.person_id) AS cast_count
    FROM 
        RankedMovies rm
    LEFT JOIN 
        cast_info ca ON ca.movie_id = rm.movie_id
    LEFT JOIN 
        kind_type kt ON kt.id = rm.kind_id
    WHERE 
        rm.rank <= 10
    GROUP BY 
        rm.title, rm.production_year, kt.kind
),
FilteredMovies AS (
    SELECT 
        tm.title,
        tm.production_year,
        tm.movie_kind,
        tm.cast_count,
        (SELECT COUNT(*) 
         FROM movie_keyword mk 
         JOIN keyword k ON mk.keyword_id = k.id 
         WHERE mk.movie_id = tm.movie_id) AS keyword_count
    FROM 
        TopMovies tm
    WHERE 
        tm.cast_count > 5
)
SELECT 
    fm.title,
    fm.production_year,
    fm.movie_kind,
    fm.cast_count,
    fm.keyword_count,
    COALESCE(ARRAY_AGG(DISTINCT a.name ORDER BY a.name), ARRAY[]::varchar[]) AS actors
FROM 
    FilteredMovies fm
LEFT JOIN 
    cast_info ci ON ci.movie_id = (SELECT id FROM aka_title WHERE title = fm.title AND production_year = fm.production_year LIMIT 1)
LEFT JOIN 
    aka_name a ON a.person_id = ci.person_id
GROUP BY 
    fm.title, fm.production_year, fm.movie_kind, fm.cast_count, fm.keyword_count
ORDER BY 
    fm.production_year DESC, fm.cast_count DESC;
