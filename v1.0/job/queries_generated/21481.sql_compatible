
WITH ranked_titles AS (
    SELECT 
        a.id AS aka_id,
        a.name AS actor_name,
        t.title AS movie_title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY a.person_id ORDER BY t.production_year DESC) AS rank
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    JOIN 
        aka_title t ON c.movie_id = t.movie_id
    WHERE 
        a.name IS NOT NULL AND
        t.production_year IS NOT NULL
), 

actors_with_more_than_five_movies AS (
    SELECT 
        aka_id,
        actor_name
    FROM 
        ranked_titles
    GROUP BY 
        aka_id, actor_name
    HAVING 
        COUNT(movie_title) > 5
), 

movies_with_keywords AS (
    SELECT 
        t.id AS title_id, 
        t.title, 
        k.keyword
    FROM 
        aka_title t
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        t.production_year BETWEEN 2000 AND 2020
), 

company_movies AS (
    SELECT 
        mc.movie_id,
        c.name AS company_name,
        ct.kind AS company_type,
        COUNT(mc.id) AS num_of_companies
    FROM 
        movie_companies mc
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    GROUP BY 
        mc.movie_id, c.name, ct.kind
), 

final_result AS (
    SELECT 
        a.actor_name,
        rt.movie_title AS title,
        rt.production_year,
        mw.keyword,
        cm.company_name,
        cm.company_type,
        cm.num_of_companies
    FROM 
        actors_with_more_than_five_movies a
    JOIN 
        ranked_titles rt ON a.aka_id = rt.aka_id
    JOIN 
        movies_with_keywords mw ON rt.movie_title = mw.title
    LEFT JOIN 
        company_movies cm ON rt.movie_title = cm.movie_id
    WHERE 
        rt.rank <= 10 OR cm.num_of_companies IS NULL
)

SELECT 
    actor_name,
    title,
    production_year,
    COALESCE(keyword, 'No Keywords') AS keyword,
    COALESCE(company_name, 'Independent') AS company_name,
    COALESCE(company_type, 'N/A') AS company_type,
    CASE WHEN num_of_companies IS NULL THEN 'Independent' ELSE company_name END AS effective_company_name
FROM 
    final_result
ORDER BY 
    production_year DESC, actor_name;
