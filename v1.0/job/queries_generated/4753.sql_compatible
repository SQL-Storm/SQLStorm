
WITH RankedMovies AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        m.production_year,
        COUNT(DISTINCT c.person_id) AS actor_count,
        ROW_NUMBER() OVER (PARTITION BY m.production_year ORDER BY COUNT(DISTINCT c.person_id) DESC) AS rn
    FROM 
        aka_title m
    LEFT JOIN 
        cast_info c ON m.id = c.movie_id
    GROUP BY 
        m.id, m.title, m.production_year
),
TopActors AS (
    SELECT 
        a.id AS actor_id,
        a.name,
        COUNT(DISTINCT ca.movie_id) AS movie_count,
        DENSE_RANK() OVER (ORDER BY COUNT(DISTINCT ca.movie_id) DESC) AS rank
    FROM 
        aka_name a
    JOIN 
        cast_info ca ON a.person_id = ca.person_id
    GROUP BY 
        a.id, a.name
    HAVING 
        COUNT(DISTINCT ca.movie_id) > 5
),
MovieCompanies AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT c.name, ', ') AS companies
    FROM 
        movie_companies mc
    JOIN 
        company_name c ON mc.company_id = c.id
    GROUP BY 
        mc.movie_id
)
SELECT 
    rm.title,
    rm.production_year,
    rm.actor_count,
    ta.name AS top_actor,
    ta.movie_count,
    mc.companies
FROM 
    RankedMovies rm
LEFT JOIN 
    TopActors ta ON rm.movie_id IN (SELECT movie_id FROM cast_info WHERE person_id = ta.actor_id)
LEFT JOIN 
    MovieCompanies mc ON rm.movie_id = mc.movie_id
WHERE 
    rm.rn <= 10
ORDER BY 
    rm.production_year DESC, rm.actor_count DESC;
