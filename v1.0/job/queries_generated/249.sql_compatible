
WITH RankedMovies AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        m.production_year,
        COUNT(c.person_id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY m.production_year ORDER BY COUNT(c.person_id) DESC) AS rank
    FROM 
        aka_title m
    LEFT JOIN 
        cast_info c ON m.id = c.movie_id
    GROUP BY 
        m.id, m.title, m.production_year
),
TopMovies AS (
    SELECT 
        rm.*,
        COALESCE(mk.keyword, 'No Keywords') AS keyword_association
    FROM 
        RankedMovies rm
    LEFT JOIN 
        movie_keyword mk ON rm.movie_id = mk.movie_id
    WHERE 
        rm.rank <= 5 
),
MovieDetails AS (
    SELECT 
        tm.movie_id,
        tm.title,
        tm.production_year,
        tm.cast_count,
        tm.keyword_association,
        CASE 
            WHEN mr.info IS NOT NULL THEN mr.info 
            ELSE 'No additional info provided' 
        END AS additional_info
    FROM 
        TopMovies tm
    LEFT JOIN 
        movie_info mr ON tm.movie_id = mr.movie_id
    WHERE 
        mr.info_type_id IN (SELECT id FROM info_type WHERE info = 'summary')
)
SELECT 
    md.title,
    md.production_year,
    md.cast_count,
    md.keyword_association,
    md.additional_info
FROM 
    MovieDetails md
WHERE 
    md.cast_count > (
        SELECT AVG(cast_count) FROM RankedMovies
    )
ORDER BY 
    md.production_year DESC, md.cast_count DESC;
