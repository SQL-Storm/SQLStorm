
SELECT 
    a.id AS aka_id,
    a.name AS aka_name,
    t.title AS movie_title,
    COALESCE(c.name, 'Unknown') AS character_name,
    p.info AS person_info,
    c2.kind AS company_type,
    k.keyword AS movie_keyword,
    MIN(m.production_year) AS earliest_production_year
FROM 
    aka_name a
JOIN 
    cast_info ci ON a.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
LEFT JOIN 
    char_name c ON ci.person_id = c.imdb_id
LEFT JOIN 
    person_info p ON a.person_id = p.person_id AND p.info_type_id = (SELECT id FROM info_type WHERE info = 'Bio')
LEFT JOIN 
    movie_companies mc ON t.id = mc.movie_id
LEFT JOIN 
    company_type c2 ON mc.company_type_id = c2.id
LEFT JOIN 
    movie_keyword mk ON t.id = mk.movie_id
LEFT JOIN 
    keyword k ON mk.keyword_id = k.id
JOIN 
    complete_cast cc ON cc.movie_id = t.id
JOIN 
    movie m ON t.id = m.id
WHERE 
    t.production_year > 2000
GROUP BY 
    a.id, a.name, t.title, c.name, p.info, c2.kind, k.keyword
ORDER BY 
    earliest_production_year DESC;
