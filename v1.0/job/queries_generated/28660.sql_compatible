
WITH MovieData AS (
    SELECT 
        m.id AS movie_id,
        m.title AS movie_title,
        m.production_year,
        k.keyword AS movie_keyword,
        c.company_name AS production_company,
        a.name AS actor_name,
        p.gender AS actor_gender,
        COUNT(DISTINCT k.id) AS keyword_count
    FROM 
        title m
    JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        movie_companies mc ON m.id = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        complete_cast cc ON m.id = cc.movie_id
    JOIN 
        cast_info ca ON cc.subject_id = ca.person_id
    JOIN 
        aka_name a ON ca.person_id = a.person_id
    JOIN 
        person_info p ON a.person_id = p.person_id
    WHERE 
        m.production_year BETWEEN 2000 AND 2023
    GROUP BY 
        m.id, m.title, m.production_year, k.keyword, c.company_name, a.name, p.gender
),
RankedMovies AS (
    SELECT 
        movie_id,
        movie_title,
        production_year,
        movie_keyword,
        production_company,
        actor_name,
        actor_gender,
        keyword_count,
        ROW_NUMBER() OVER (PARTITION BY production_year ORDER BY keyword_count DESC) AS rank
    FROM 
        MovieData
)
SELECT 
    movie_id,
    movie_title,
    production_year,
    movie_keyword,
    production_company,
    actor_name,
    actor_gender,
    keyword_count,
    rank
FROM 
    RankedMovies
WHERE 
    rank <= 5
ORDER BY 
    production_year, keyword_count DESC;
