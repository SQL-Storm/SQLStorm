
WITH RankedMovies AS (
    SELECT 
        m.id AS movie_id,
        m.title AS movie_title,
        m.production_year,
        kt.kind AS movie_kind,
        COUNT(cc.id) AS cast_count
    FROM 
        title m
    JOIN 
        kind_type kt ON m.kind_id = kt.id
    LEFT JOIN 
        complete_cast cc ON m.id = cc.movie_id
    GROUP BY 
        m.id, m.title, m.production_year, kt.kind
    HAVING 
        COUNT(cc.id) > 0
),
ActorsWithRoles AS (
    SELECT 
        a.id AS actor_id,
        ak.name AS actor_name,
        ci.movie_id,
        rt.role,
        COUNT(DISTINCT ci.id) AS roles_count
    FROM 
        aka_name ak
    JOIN 
        cast_info ci ON ak.person_id = ci.person_id
    JOIN 
        role_type rt ON ci.role_id = rt.id
    GROUP BY 
        ak.id, ak.name, ci.movie_id, rt.role
),
MovieKeywords AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords_list
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
)
SELECT 
    rm.movie_id,
    rm.movie_title,
    rm.production_year,
    rm.movie_kind,
    rm.cast_count,
    ak.actor_id,
    ak.actor_name,
    ak.roles_count,
    mk.keywords_list
FROM 
    RankedMovies rm
LEFT JOIN 
    ActorsWithRoles ak ON rm.movie_id = ak.movie_id
LEFT JOIN 
    MovieKeywords mk ON rm.movie_id = mk.movie_id
ORDER BY 
    rm.production_year DESC,
    rm.cast_count DESC,
    ak.roles_count DESC;
