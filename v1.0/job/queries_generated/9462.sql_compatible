
SELECT 
    t.title AS movie_title,
    a.name AS actor_name,
    r.role AS actor_role,
    c.company_name AS production_company,
    MIN(mi.info) AS movie_info
FROM 
    title t
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name c ON mc.company_id = c.id
JOIN 
    complete_cast cc ON t.id = cc.movie_id
JOIN 
    cast_info ci ON cc.subject_id = ci.person_id 
JOIN 
    aka_name a ON ci.person_id = a.person_id
JOIN 
    role_type r ON ci.role_id = r.id
LEFT JOIN 
    movie_info mi ON t.id = mi.movie_id AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'Budget')
WHERE 
    t.production_year >= 2000
GROUP BY 
    t.title, a.name, r.role, c.company_name, t.production_year
HAVING 
    COUNT(DISTINCT a.person_id) > 2
ORDER BY 
    SUM(CASE WHEN r.role LIKE '%Lead%' THEN 1 ELSE 0 END) DESC, 
    t.production_year DESC;
