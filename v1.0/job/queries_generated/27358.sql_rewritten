WITH MovieDetails AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        STRING_AGG(DISTINCT co.name, ', ') AS companies,
        STRING_AGG(DISTINCT kw.keyword, ', ') AS keywords,
        COUNT(DISTINCT ci.person_role_id) AS total_cast,
        STRING_AGG(DISTINCT ak.name, ', ') AS aka_names
    FROM 
        title t
    LEFT JOIN 
        movie_companies mc ON t.id = mc.movie_id
    LEFT JOIN 
        company_name co ON mc.company_id = co.id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword kw ON mk.keyword_id = kw.id
    LEFT JOIN 
        complete_cast cc ON t.id = cc.movie_id
    LEFT JOIN 
        cast_info ci ON cc.subject_id = ci.person_id AND ci.movie_id = t.id
    LEFT JOIN 
        aka_title ak ON t.id = ak.movie_id
    GROUP BY 
        t.id, t.title, t.production_year
),
Actors AS (
    SELECT 
        ak.name AS actor_name,
        COUNT(DISTINCT cd.movie_id) AS movies_acted
    FROM 
        aka_name ak
    LEFT JOIN 
        cast_info ci ON ak.person_id = ci.person_id
    LEFT JOIN 
        complete_cast cd ON ci.movie_id = cd.movie_id
    GROUP BY 
        ak.name
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    md.companies,
    md.keywords,
    md.total_cast,
    md.aka_names,
    a.actor_name,
    a.movies_acted
FROM 
    MovieDetails md
JOIN 
    Actors a ON md.total_cast > 0    
ORDER BY 
    md.production_year DESC, 
    a.movies_acted DESC
LIMIT 10;