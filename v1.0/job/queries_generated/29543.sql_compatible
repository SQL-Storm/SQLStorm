
WITH RankedTitles AS (
    SELECT 
        t.title,
        t.production_year,
        COUNT(DISTINCT kc.keyword) AS keyword_count,
        STRING_AGG(DISTINCT c.kind, ', ') AS company_kinds,
        STRING_AGG(DISTINCT CONCAT(aka.name, ' as ', r.role)) AS cast_and_roles
    FROM 
        aka_title t
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword kc ON mk.keyword_id = kc.id
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    JOIN 
        cast_info c ON cc.subject_id = c.id
    JOIN 
        role_type r ON c.role_id = r.id
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    JOIN 
        company_name cn ON mc.company_id = cn.id
    JOIN 
        aka_name aka ON c.person_id = aka.person_id
    GROUP BY 
        t.title, t.production_year
),
TopTitles AS (
    SELECT 
        title, 
        production_year, 
        keyword_count, 
        company_kinds, 
        cast_and_roles,
        RANK() OVER (ORDER BY keyword_count DESC) AS rank
    FROM 
        RankedTitles
)
SELECT 
    title,
    production_year,
    keyword_count,
    company_kinds,
    cast_and_roles
FROM 
    TopTitles
WHERE 
    rank <= 10
ORDER BY 
    rank;
