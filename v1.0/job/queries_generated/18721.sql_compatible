
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    c.role_id AS role,
    m.production_year
FROM 
    aka_name a
JOIN 
    cast_info c ON a.person_id = c.person_id
JOIN 
    aka_title t ON c.movie_id = t.movie_id
JOIN 
    movie_info m ON t.id = m.movie_id
WHERE 
    m.info_type_id = (SELECT id FROM info_type WHERE info = 'Running Time')
GROUP BY 
    a.name, t.title, c.role_id, m.production_year
ORDER BY 
    m.production_year DESC;
