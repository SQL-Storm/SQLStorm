
WITH movie_details AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        t.kind_id,
        STRING_AGG(DISTINCT ak.name, ', ') AS aka_names, 
        STRING_AGG(DISTINCT kw.keyword, ', ') AS keywords
    FROM 
        aka_title ak
    JOIN 
        title t ON ak.movie_id = t.id
    LEFT JOIN 
        movie_keyword mk ON mk.movie_id = t.id
    LEFT JOIN 
        keyword kw ON mk.keyword_id = kw.id
    GROUP BY 
        t.id, t.title, t.production_year, t.kind_id
),
cast_details AS (
    SELECT 
        ci.movie_id,
        STRING_AGG(DISTINCT pn.name, ', ') AS cast_names,
        COUNT(DISTINCT cn.name) AS company_count
    FROM 
        cast_info ci
    JOIN 
        aka_name pn ON ci.person_id = pn.person_id
    LEFT JOIN 
        movie_companies mc ON mc.movie_id = ci.movie_id
    LEFT JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        ci.movie_id
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    md.kind_id,
    md.aka_names,
    cd.cast_names,
    cd.company_count,
    md.keywords
FROM 
    movie_details md
JOIN 
    cast_details cd ON md.movie_id = cd.movie_id
WHERE 
    md.production_year >= 2000
ORDER BY 
    md.production_year DESC, 
    md.title;
