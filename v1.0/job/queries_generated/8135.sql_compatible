
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    t.production_year,
    p.info AS actor_biography,
    c.kind AS cast_type,
    STRING_AGG(DISTINCT k.keyword, ', ') AS keywords
FROM 
    aka_name a
JOIN 
    cast_info ci ON a.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
LEFT JOIN 
    complete_cast cc ON t.id = cc.movie_id
LEFT JOIN 
    company_name cn ON cn.id = (SELECT mc.company_id FROM movie_companies mc WHERE mc.movie_id = t.id LIMIT 1) 
LEFT JOIN 
    person_info p ON a.person_id = p.person_id
LEFT JOIN 
    role_type rt ON ci.role_id = rt.id
LEFT JOIN 
    movie_keyword mk ON t.id = mk.movie_id
LEFT JOIN 
    keyword k ON mk.keyword_id = k.id
LEFT JOIN 
    comp_cast_type c ON ci.person_role_id = c.id
WHERE 
    t.production_year BETWEEN 1990 AND 2020
    AND k.keyword IS NOT NULL
GROUP BY 
    a.name, t.title, t.production_year, p.info, c.kind
ORDER BY 
    t.production_year DESC, a.name;
