
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT ci.person_id) OVER (PARTITION BY t.id) AS actor_count,
        COALESCE(SUM(CASE WHEN ci.note IS NULL THEN 1 ELSE 0 END), 0) AS null_role_count
    FROM title t
    LEFT JOIN complete_cast cc ON t.id = cc.movie_id
    LEFT JOIN cast_info ci ON cc.subject_id = ci.id
    WHERE t.production_year > 2000
),
MovieKeywords AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM movie_keyword mk
    JOIN keyword k ON mk.keyword_id = k.id
    GROUP BY mk.movie_id
),
ActorNames AS (
    SELECT 
        a.name,
        ca.movie_id,
        ROW_NUMBER() OVER (PARTITION BY ca.movie_id ORDER BY a.name) AS actor_order
    FROM aka_name a
    JOIN cast_info ca ON a.person_id = ca.person_id
)
SELECT 
    rm.title,
    rm.production_year,
    rm.actor_count,
    rm.null_role_count,
    mk.keywords,
    STRING_AGG(an.name, '; ' ORDER BY an.actor_order) AS actor_names
FROM RankedMovies rm
LEFT JOIN MovieKeywords mk ON rm.movie_id = mk.movie_id
LEFT JOIN ActorNames an ON rm.movie_id = an.movie_id
GROUP BY 
    rm.movie_id,
    rm.title,
    rm.production_year,
    rm.actor_count,
    rm.null_role_count,
    mk.keywords
ORDER BY rm.production_year DESC, rm.actor_count DESC;
