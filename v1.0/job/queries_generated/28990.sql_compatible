
WITH MovieDetails AS (
    SELECT 
        t.id AS movie_id,
        t.title AS movie_title,
        t.production_year,
        STRING_AGG(DISTINCT cc.kind, ',') AS company_types,
        COUNT(DISTINCT mk.keyword) AS keyword_count,
        COUNT(DISTINCT c.id) AS cast_count
    FROM 
        aka_title t
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_type cc ON mc.company_type_id = cc.id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    GROUP BY 
        t.id, t.title, t.production_year
),
PersonWithKeywordCount AS (
    SELECT 
        ak.person_id AS person_id,
        ak.name AS actor_name,
        COUNT(DISTINCT mk.keyword) AS keyword_count
    FROM 
        aka_name ak
    JOIN 
        cast_info c ON ak.person_id = c.person_id
    LEFT JOIN 
        movie_keyword mk ON c.movie_id = mk.movie_id
    GROUP BY 
        ak.person_id, ak.name
),
TopMovies AS (
    SELECT 
        movie_id,
        movie_title,
        production_year,
        company_types,
        keyword_count,
        cast_count,
        ROW_NUMBER() OVER (ORDER BY keyword_count DESC, cast_count DESC) AS rn
    FROM 
        MovieDetails
)
SELECT 
    tm.movie_title,
    tm.production_year,
    tm.company_types,
    tm.keyword_count,
    tm.cast_count,
    pw.actor_name,
    pw.keyword_count AS actor_keyword_count
FROM 
    TopMovies tm
JOIN 
    PersonWithKeywordCount pw ON pw.keyword_count > 5
WHERE 
    tm.rn <= 10
ORDER BY 
    tm.keyword_count DESC, tm.cast_count DESC, pw.actor_name;
