
WITH RankedTitles AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT m.id) AS num_companies,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT m.id) DESC) AS rank
    FROM 
        title t
    LEFT JOIN
        movie_companies mc ON t.id = mc.movie_id
    LEFT JOIN 
        company_name m ON mc.company_id = m.id
    GROUP BY 
        t.id, t.title, t.production_year
),

TopRankedTitles AS (
    SELECT 
        title_id, title, production_year
    FROM 
        RankedTitles
    WHERE 
        rank <= 5 
),

CastDetails AS (
    SELECT 
        c.movie_id,
        a.name AS actor_name,
        r.role AS role_name,
        COUNT(*) AS num_roles
    FROM 
        cast_info c
    JOIN 
        aka_name a ON c.person_id = a.person_id
    JOIN 
        role_type r ON c.role_id = r.id
    GROUP BY 
        c.movie_id, a.name, r.role
)

SELECT 
    t.title,
    t.production_year,
    cd.actor_name,
    cd.role_name,
    cd.num_roles,
    COALESCE(SUM(CASE WHEN mi.info IS NOT NULL THEN 1 ELSE 0 END), 0) AS movie_info_count,
    COALESCE(SUM(CASE WHEN kw.keyword IS NOT NULL THEN 1 ELSE 0 END), 0) AS keyword_count
FROM 
    TopRankedTitles t
LEFT JOIN 
    CastDetails cd ON t.title_id = cd.movie_id
LEFT JOIN 
    movie_info mi ON t.title_id = mi.movie_id
LEFT JOIN 
    movie_keyword mk ON t.title_id = mk.movie_id
LEFT JOIN 
    keyword kw ON mk.keyword_id = kw.id
GROUP BY 
    t.title, t.production_year, cd.actor_name, cd.role_name
ORDER BY 
    t.production_year, COUNT(cd.num_roles) DESC;
