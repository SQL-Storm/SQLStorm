
WITH ranked_movies AS (
    SELECT 
        a.title, 
        a.production_year, 
        COUNT(c.id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY a.production_year ORDER BY COUNT(c.id) DESC) AS rank
    FROM 
        aka_title a
    LEFT JOIN 
        cast_info c ON a.id = c.movie_id
    GROUP BY 
        a.title, 
        a.production_year
), 
high_cast_movies AS (
    SELECT 
        title,
        production_year
    FROM 
        ranked_movies
    WHERE 
        rank <= 5
), 
movie_keywords AS (
    SELECT 
        mk.movie_id, 
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword mk 
    JOIN 
        keyword k ON mk.keyword_id = k.id 
    GROUP BY 
        mk.movie_id
)
SELECT 
    h.title,
    h.production_year,
    COALESCE(mk.keywords, 'No Keywords') AS keywords
FROM 
    high_cast_movies h
LEFT JOIN 
    movie_keywords mk ON h.title = (SELECT title FROM aka_title WHERE id = h.title)
ORDER BY 
    h.production_year DESC, 
    h.title;
