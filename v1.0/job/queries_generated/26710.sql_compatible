
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        STRING_AGG(DISTINCT ak.name, ', ') AS aka_names,
        STRING_AGG(DISTINCT pn.name, ', ') AS person_names,
        COUNT(DISTINCT mk.keyword) AS keyword_count,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT mk.keyword) DESC) AS rank
    FROM 
        aka_title t
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        cast_info ci ON t.id = ci.movie_id
    LEFT JOIN 
        aka_name ak ON ci.person_id = ak.person_id
    LEFT JOIN 
        name pn ON ci.person_id = pn.imdb_id
    GROUP BY 
        t.id, t.title, t.production_year
),
TopMovies AS (
    SELECT *
    FROM RankedMovies
    WHERE rank <= 10
)
SELECT 
    tm.movie_id,
    tm.title,
    tm.production_year,
    tm.aka_names,
    tm.person_names,
    tm.keyword_count
FROM 
    TopMovies tm
JOIN 
    kind_type kt ON kt.id = (SELECT kind_id FROM title WHERE id = tm.movie_id)
ORDER BY 
    tm.production_year DESC, 
    tm.keyword_count DESC;
