
WITH RankedMovies AS (
    SELECT 
        t.title,
        t.production_year,
        COUNT(DISTINCT c.person_id) AS actor_count,
        RANK() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT c.person_id) DESC) AS rank
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    GROUP BY 
        t.title, t.production_year
),
MoviesWithKeywords AS (
    SELECT 
        m.title,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        RankedMovies m
    LEFT JOIN 
        movie_keyword mk ON m.title = (SELECT title FROM aka_title WHERE id = mk.movie_id)
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        m.rank <= 5
    GROUP BY 
        m.title
),
PersonInfo AS (
    SELECT 
        p.id AS person_id,
        p.name,
        COUNT(DISTINCT c.movie_id) AS movie_count
    FROM 
        name p
    LEFT JOIN 
        cast_info c ON p.id = c.person_id
    GROUP BY 
        p.id, p.name
    HAVING 
        COUNT(DISTINCT c.movie_id) > 2
)
SELECT 
    mw.title,
    mw.keywords,
    pi.name AS actor_name,
    pi.movie_count
FROM 
    MoviesWithKeywords mw
JOIN 
    PersonInfo pi ON pi.movie_count > 2
WHERE 
    mw.keywords IS NOT NULL
ORDER BY 
    mw.title DESC, pi.movie_count DESC;
