
WITH movie_details AS (
    SELECT 
        a.title,
        a.production_year,
        c.name AS company_name,
        k.keyword,
        ROW_NUMBER() OVER (PARTITION BY a.id ORDER BY a.production_year DESC) AS rn
    FROM 
        aka_title a
    LEFT JOIN 
        movie_companies mc ON a.id = mc.movie_id
    LEFT JOIN 
        company_name c ON mc.company_id = c.id
    LEFT JOIN 
        movie_keyword mk ON a.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        a.production_year IS NOT NULL
),
actor_info AS (
    SELECT 
        p.name AS actor_name,
        c.movie_id,
        STRING_AGG(DISTINCT r.role ORDER BY r.role) AS roles
    FROM 
        cast_info c
    JOIN 
        aka_name p ON c.person_id = p.person_id
    JOIN 
        role_type r ON c.role_id = r.id
    GROUP BY 
        p.name, c.movie_id
),
summary AS (
    SELECT 
        md.title,
        md.production_year,
        md.company_name,
        md.keyword,
        ai.actor_name,
        ai.roles,
        COALESCE(ai.roles, 'No roles assigned') AS final_roles
    FROM 
        movie_details md
    LEFT JOIN 
        actor_info ai ON md.title = ai.movie_id
)
SELECT 
    title,
    production_year,
    company_name,
    keyword,
    actor_name,
    final_roles
FROM 
    summary
WHERE 
    production_year >= 2000
    AND (company_name IS NOT NULL OR keyword IS NOT NULL)
ORDER BY 
    production_year DESC, title;
