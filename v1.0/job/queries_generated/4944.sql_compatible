
WITH movie_details AS (
    SELECT 
        mt.id AS movie_id,
        mt.title,
        mt.production_year,
        COUNT(DISTINCT cc.person_id) AS total_cast,
        STRING_AGG(DISTINCT ac.name, ', ') AS cast_names
    FROM 
        aka_title mt
    LEFT JOIN 
        complete_cast cc ON mt.id = cc.movie_id
    LEFT JOIN 
        cast_info ci ON cc.subject_id = ci.id
    LEFT JOIN 
        aka_name ac ON ci.person_id = ac.person_id
    WHERE 
        mt.production_year >= 2000
    GROUP BY 
        mt.id, mt.title, mt.production_year
),
award_count AS (
    SELECT 
        movie_id,
        COUNT(*) AS award_count
    FROM 
        movie_info
    WHERE 
        info_type_id IN (SELECT id FROM info_type WHERE info = 'Oscar')
    GROUP BY 
        movie_id
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    md.total_cast,
    md.cast_names,
    COALESCE(ac.award_count, 0) AS award_count,
    CASE 
        WHEN md.total_cast > 10 THEN 'Large Cast'
        ELSE 'Small Cast'
    END AS cast_size,
    RANK() OVER (ORDER BY md.production_year DESC, COALESCE(ac.award_count, 0) DESC) AS movie_rank
FROM 
    movie_details md
LEFT JOIN 
    award_count ac ON md.movie_id = ac.movie_id
ORDER BY 
    md.total_cast DESC, 
    md.production_year;
