
WITH RankedTitles AS (
    SELECT 
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(ci.id) DESC) AS rn
    FROM 
        aka_title t
    LEFT JOIN 
        complete_cast cc ON t.id = cc.movie_id
    LEFT JOIN 
        cast_info ci ON cc.subject_id = ci.person_id
    GROUP BY 
        t.title, t.production_year
),
TopTitles AS (
    SELECT 
        rt.title,
        rt.production_year
    FROM 
        RankedTitles rt
    WHERE 
        rt.rn <= 5
),
ActorDetails AS (
    SELECT 
        ak.name AS actor_name,
        COUNT(ci.movie_id) AS total_movies,
        SUM(CASE WHEN ci.note IS NULL THEN 1 ELSE 0 END) AS no_notes
    FROM 
        aka_name ak
    JOIN 
        cast_info ci ON ak.person_id = ci.person_id
    GROUP BY 
        ak.name
    HAVING 
        COUNT(ci.movie_id) > 10 
)
SELECT 
    tt.title,
    tt.production_year,
    ad.actor_name,
    ad.total_movies,
    ad.no_notes
FROM 
    TopTitles tt
JOIN 
    movie_companies mc ON tt.title = mc.movie_id
LEFT JOIN 
    ActorDetails ad ON mc.company_id = ad.actor_name 
WHERE 
    tt.production_year >= 2000 
ORDER BY 
    tt.production_year DESC, ad.total_movies DESC
LIMIT 10;
