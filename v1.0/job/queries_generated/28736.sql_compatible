
WITH MovieCharacterStats AS (
    SELECT 
        ak.name AS nickname,
        t.title AS movie_title,
        k.keyword AS genre,
        COUNT(c.id) AS character_count,
        AVG(t.production_year) AS avg_production_year
    FROM aka_name ak
    JOIN cast_info c ON ak.person_id = c.person_id
    JOIN aka_title t ON c.movie_id = t.movie_id
    JOIN movie_keyword mk ON t.id = mk.movie_id
    JOIN keyword k ON mk.keyword_id = k.id
    GROUP BY ak.name, t.title, k.keyword
),
TopMovies AS (
    SELECT 
        movie_title,
        SUM(character_count) AS total_characters,
        AVG(avg_production_year) AS avg_year
    FROM MovieCharacterStats
    GROUP BY movie_title
    ORDER BY total_characters DESC
    LIMIT 10
)

SELECT 
    m.movie_title,
    t.avg_year,
    STRING_AGG(DISTINCT t.genre, ', ') AS genres
FROM TopMovies m
JOIN MovieCharacterStats t ON m.movie_title = t.movie_title
JOIN movie_keyword mk ON m.movie_title = mk.movie_id
GROUP BY m.movie_title, t.avg_year
ORDER BY m.movie_title;
