
WITH ActorRoles AS (
    SELECT 
        a.id AS actor_id,
        a.name AS actor_name,
        ct.kind AS role,
        t.title AS movie_title,
        t.production_year,
        c.nr_order
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    JOIN 
        title t ON c.movie_id = t.id
    JOIN 
        role_type ct ON c.role_id = ct.id
    WHERE 
        a.name IS NOT NULL
), MovieStatistics AS (
    SELECT 
        actor_id,
        actor_name,
        COUNT(movie_title) AS total_movies,
        STRING_AGG(movie_title, ', ') AS movie_titles,
        STRING_AGG(role, ', ') AS roles
    FROM 
        ActorRoles
    GROUP BY 
        actor_id, actor_name
), ActorMovieDetails AS (
    SELECT 
        ms.actor_name,
        ms.total_movies,
        ms.movie_titles,
        ms.roles,
        ROW_NUMBER() OVER (ORDER BY ms.total_movies DESC) AS rank
    FROM 
        MovieStatistics ms
)
SELECT 
    amd.actor_name,
    amd.total_movies,
    amd.movie_titles,
    amd.roles
FROM 
    ActorMovieDetails amd
WHERE 
    amd.rank <= 10
ORDER BY 
    amd.total_movies DESC;
