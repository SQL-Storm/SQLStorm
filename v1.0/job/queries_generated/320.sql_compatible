
WITH RankedMovies AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS year_rank
    FROM 
        title t
    WHERE 
        t.production_year IS NOT NULL
),
ActorCounts AS (
    SELECT 
        c.movie_id,
        COUNT(DISTINCT c.person_id) AS actor_count
    FROM 
        cast_info c
    GROUP BY 
        c.movie_id
),
CompanyStats AS (
    SELECT 
        mc.movie_id,
        COUNT(DISTINCT cn.id) AS company_count,
        STRING_AGG(DISTINCT co.name, ', ') AS companies
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    GROUP BY 
        mc.movie_id
)
SELECT 
    rm.title,
    rm.production_year,
    ac.actor_count,
    cs.company_count,
    cs.companies,
    (SELECT COUNT(*) FROM movie_keyword mk WHERE mk.movie_id = rm.title_id) AS keyword_count,
    COALESCE(NULLIF(cs.companies, ''), 'No Companies') AS companies_info
FROM 
    RankedMovies rm
LEFT JOIN 
    ActorCounts ac ON rm.title_id = ac.movie_id
LEFT JOIN 
    CompanyStats cs ON rm.title_id = cs.movie_id
WHERE 
    rm.year_rank <= 5
    AND (ac.actor_count > 5 OR cs.company_count IS NULL)
ORDER BY 
    rm.production_year DESC, 
    ac.actor_count DESC NULLS LAST;
