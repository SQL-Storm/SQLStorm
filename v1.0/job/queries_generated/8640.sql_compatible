
WITH RankedTitles AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM title t
    WHERE t.production_year IS NOT NULL
),
ActorTitles AS (
    SELECT 
        a.name AS actor_name,
        rt.title,
        rt.production_year,
        rt.title_id
    FROM aka_name a
    JOIN cast_info ci ON a.person_id = ci.person_id
    JOIN RankedTitles rt ON ci.movie_id = rt.title_id
),
KeywordDetails AS (
    SELECT 
        kt.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM movie_keyword kt
    JOIN keyword k ON kt.keyword_id = k.id
    GROUP BY kt.movie_id
)
SELECT 
    at.actor_name,
    at.title,
    at.production_year,
    kd.keywords
FROM ActorTitles at
LEFT JOIN KeywordDetails kd ON at.title_id = kd.movie_id
WHERE at.title_rank <= 10
ORDER BY at.production_year DESC, at.actor_name;
