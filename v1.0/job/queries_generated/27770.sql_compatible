
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COALESCE(COUNT(ci.person_id), 0) AS cast_count,
        COALESCE(SUM(CASE WHEN ci.note IS NOT NULL THEN 1 ELSE 0 END), 0) AS notable_cast_count
    FROM 
        aka_title t
    LEFT JOIN 
        complete_cast cc ON t.id = cc.movie_id
    LEFT JOIN 
        cast_info ci ON cc.subject_id = ci.person_id
    GROUP BY 
        t.id, t.title, t.production_year
),

KeywordStats AS (
    SELECT 
        movie_id,
        COUNT(DISTINCT keyword_id) AS keyword_count
    FROM 
        movie_keyword
    GROUP BY 
        movie_id
),

MovieDetails AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        rm.cast_count,
        rm.notable_cast_count,
        ks.keyword_count
    FROM 
        RankedMovies rm
    LEFT JOIN 
        KeywordStats ks ON rm.movie_id = ks.movie_id
)

SELECT 
    md.title,
    md.production_year,
    md.cast_count,
    md.notable_cast_count,
    COALESCE(md.keyword_count, 0) AS keyword_count,
    STRING_AGG(DISTINCT ak.name, ', ') AS aka_names
FROM 
    MovieDetails md
LEFT JOIN 
    aka_name ak ON ak.person_id IN (
        SELECT 
            ci.person_id 
        FROM 
            cast_info ci 
        WHERE 
            ci.movie_id = md.movie_id
    )
GROUP BY 
    md.movie_id, md.title, md.production_year, md.cast_count, md.notable_cast_count, ak.name
ORDER BY 
    md.production_year DESC, 
    md.cast_count DESC;
