
WITH ranked_movies AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        r.role,
        ROW_NUMBER() OVER (PARTITION BY t.id ORDER BY c.nr_order) AS actor_rank
    FROM 
        aka_title t
    JOIN 
        cast_info c ON t.id = c.movie_id
    JOIN 
        role_type r ON c.role_id = r.id
    WHERE 
        t.production_year IS NOT NULL
),
actor_movie_counts AS (
    SELECT 
        c.person_id,
        COUNT(DISTINCT rm.movie_title) AS movie_count
    FROM 
        ranked_movies rm
    JOIN 
        cast_info c ON rm.movie_title = (SELECT title FROM aka_title WHERE id = c.movie_id)
    GROUP BY 
        c.person_id
)
SELECT 
    ak.name,
    COALESCE(amc.movie_count, 0) AS movie_count,
    ARRAY_AGG(DISTINCT rm.movie_title) AS movies,
    CASE WHEN COALESCE(amc.movie_count, 0) = 0 THEN 'No Movies' ELSE CAST(amc.movie_count AS VARCHAR) END AS movie_count_display
FROM 
    aka_name ak
LEFT JOIN 
    actor_movie_counts amc ON ak.person_id = amc.person_id
LEFT JOIN 
    ranked_movies rm ON rm.actor_rank <= 3
WHERE 
    ak.name ILIKE '%John%'
GROUP BY 
    ak.name, ak.id, amc.movie_count
HAVING 
    COUNT(DISTINCT rm.movie_title) > 2 OR amc.movie_count IS NULL
ORDER BY 
    amc.movie_count DESC NULLS LAST;
