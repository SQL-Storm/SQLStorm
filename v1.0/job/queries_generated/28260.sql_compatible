
WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT ka.id) AS aka_name_count,
        COUNT(DISTINCT mc.company_id) AS company_count,
        ARRAY_AGG(DISTINCT kw.keyword) AS keywords
    FROM 
        aka_title t
    LEFT JOIN aka_name ka ON t.title ILIKE '%' || ka.name || '%'
    LEFT JOIN movie_companies mc ON t.id = mc.movie_id
    LEFT JOIN movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN keyword kw ON mk.keyword_id = kw.id
    WHERE 
        t.production_year BETWEEN 2000 AND 2020
    GROUP BY 
        t.id, t.title, t.production_year
), actor_roles AS (
    SELECT 
        c.movie_id,
        ARRAY_AGG(DISTINCT r.role) AS roles,
        COUNT(DISTINCT c.person_id) AS actor_count
    FROM 
        cast_info c
    JOIN role_type r ON c.person_role_id = r.id
    GROUP BY 
        c.movie_id
), enriched_movies AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        rm.aka_name_count,
        rm.company_count,
        rm.keywords,
        ar.roles,
        ar.actor_count
    FROM 
        ranked_movies rm
    LEFT JOIN actor_roles ar ON rm.movie_id = ar.movie_id
)
SELECT 
    em.movie_id,
    em.title,
    em.production_year,
    em.aka_name_count,
    em.company_count,
    em.actor_count,
    em.roles,
    em.keywords
FROM 
    enriched_movies em
WHERE 
    em.actor_count > 5
ORDER BY 
    em.production_year DESC, 
    em.aka_name_count DESC
LIMIT 50;
