
WITH RankedMovies AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        m.production_year,
        ROW_NUMBER() OVER (PARTITION BY m.production_year ORDER BY m.id) AS rank
    FROM 
        title m
    WHERE 
        m.kind_id IN (SELECT id FROM kind_type WHERE kind = 'movie')
),
ActorMovieDetails AS (
    SELECT 
        a.name AS actor_name,
        m.title AS movie_title,
        m.production_year,
        STRING_AGG(DISTINCT r.role ORDER BY r.role) AS roles
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    JOIN 
        RankedMovies m ON c.movie_id = m.movie_id
    JOIN 
        role_type r ON c.role_id = r.id
    GROUP BY 
        a.name, m.title, m.production_year
),
CompanyMovieDetails AS (
    SELECT 
        c.name AS company_name,
        m.title AS movie_title,
        m.production_year,
        ct.kind AS company_type
    FROM 
        movie_companies mc
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    JOIN 
        RankedMovies m ON mc.movie_id = m.movie_id
)
SELECT 
    am.actor_name,
    am.movie_title,
    am.production_year,
    am.roles,
    cm.company_name,
    cm.company_type
FROM 
    ActorMovieDetails am
LEFT JOIN 
    CompanyMovieDetails cm ON am.movie_title = cm.movie_title AND am.production_year = cm.production_year
WHERE 
    am.production_year >= 2000
ORDER BY 
    am.production_year DESC, am.actor_name;
