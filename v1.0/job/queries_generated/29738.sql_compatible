
WITH movie_details AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        k.keyword,
        cn.kind AS company_kind,
        a.name AS actor_name,
        a.md5sum AS actor_md5,
        COUNT(ci.id) AS cast_count
    FROM 
        aka_title t
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    JOIN 
        cast_info ci ON cc.subject_id = ci.id
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name cn ON mc.company_id = cn.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    LEFT JOIN 
        title tt ON t.id = tt.id
    WHERE 
        t.production_year >= 2000
    GROUP BY 
        t.id, t.title, t.production_year, k.keyword, cn.kind, a.name, a.md5sum
)
SELECT 
    title_id,
    title,
    production_year,
    STRING_AGG(DISTINCT keyword, ', ') AS keywords,
    ARRAY_AGG(DISTINCT actor_name) AS actors,
    ARRAY_AGG(DISTINCT company_kind) AS production_companies,
    SUM(cast_count) AS total_cast_count
FROM 
    movie_details
GROUP BY 
    title_id, title, production_year
ORDER BY 
    production_year DESC, title;
