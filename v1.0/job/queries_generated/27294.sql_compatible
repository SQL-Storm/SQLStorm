
WITH ranked_movies AS (
    SELECT 
        title.id AS movie_id,
        title.title AS movie_title,
        aka_title.title AS aka_title,
        title.production_year,
        ROW_NUMBER() OVER (PARTITION BY title.production_year ORDER BY title.id) AS rank_within_year
    FROM 
        title 
    JOIN 
        aka_title ON title.id = aka_title.movie_id 
    WHERE 
        title.production_year IS NOT NULL
),
cast_details AS (
    SELECT 
        ci.movie_id,
        COUNT(ci.person_id) AS total_cast,
        STRING_AGG(DISTINCT a.name, ', ') AS cast_names,
        MAX(p.gender) AS lead_gender
    FROM 
        cast_info ci
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    JOIN 
        person_info p ON a.person_id = p.person_id
    GROUP BY 
        ci.movie_id
),
info_by_year AS (
    SELECT 
        rm.production_year,
        COUNT(mk.movie_id) AS keyword_count,
        AVG(LENGTH(mi.info)) AS avg_info_length
    FROM 
        ranked_movies rm
    JOIN 
        movie_keyword mk ON rm.movie_id = mk.movie_id
    JOIN 
        movie_info mi ON rm.movie_id = mi.movie_id
    GROUP BY 
        rm.production_year
)
SELECT 
    rm.movie_id,
    rm.movie_title,
    rm.rank_within_year,
    cd.total_cast,
    cd.cast_names,
    cd.lead_gender,
    iby.keyword_count,
    iby.avg_info_length
FROM 
    ranked_movies rm
JOIN 
    cast_details cd ON rm.movie_id = cd.movie_id
JOIN 
    info_by_year iby ON rm.production_year = iby.production_year
WHERE 
    rm.rank_within_year <= 5    
ORDER BY 
    rm.production_year DESC,
    rm.rank_within_year;
