
WITH ranked_titles AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
cast_details AS (
    SELECT 
        c.movie_id,
        c.person_id,
        COALESCE(ak.name, 'Unknown') AS actor_name,
        r.role AS role_name
    FROM 
        cast_info c
    LEFT JOIN 
        aka_name ak ON c.person_id = ak.person_id
    LEFT JOIN 
        role_type r ON c.role_id = r.id
),
movie_info_summary AS (
    SELECT 
        m.movie_id,
        STRING_AGG(DISTINCT mi.info, ', ') AS movie_info
    FROM 
        movie_info m
    JOIN 
        info_type it ON m.info_type_id = it.id
    WHERE 
        m.info IS NOT NULL
    GROUP BY 
        m.movie_id
)
SELECT 
    rt.title,
    rt.production_year,
    COUNT(cd.person_id) AS actor_count,
    mi.movie_info,
    MAX(rt.title_rank) OVER (PARTITION BY rt.production_year) AS max_rank
FROM 
    ranked_titles rt
LEFT JOIN 
    cast_details cd ON rt.title_id = cd.movie_id
LEFT JOIN 
    movie_info_summary mi ON rt.title_id = mi.movie_id
WHERE 
    rt.title IS NOT NULL
GROUP BY 
    rt.title, rt.production_year, mi.movie_info
ORDER BY 
    rt.production_year DESC, actor_count DESC;
