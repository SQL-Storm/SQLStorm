
WITH RECURSIVE ActorHierarchy AS (
    SELECT 
        c.person_id,
        c.movie_id,
        c.nr_order,
        1 AS level
    FROM 
        cast_info c
    WHERE 
        c.nr_order = 1

    UNION ALL

    SELECT 
        c.person_id,
        c.movie_id,
        c.nr_order,
        ah.level + 1
    FROM 
        cast_info c
    JOIN 
        ActorHierarchy ah ON c.movie_id = ah.movie_id 
    WHERE 
        c.nr_order = ah.nr_order + 1
)
SELECT 
    a.id AS actor_id,
    ak.name AS actor_name,
    m.title AS movie_title,
    m.production_year,
    COUNT(DISTINCT c.id) AS total_cast,
    SUM(CASE WHEN r.role IS NOT NULL THEN 1 ELSE 0 END) AS roles_count,
    ROW_NUMBER() OVER (PARTITION BY m.production_year ORDER BY COUNT(DISTINCT c.id) DESC) AS rank_by_cast_count
FROM 
    aka_name ak
JOIN 
    cast_info c ON ak.person_id = c.person_id
JOIN 
    title m ON c.movie_id = m.id
LEFT JOIN 
    role_type r ON c.role_id = r.id
LEFT JOIN 
    ActorHierarchy ah ON c.person_id = ah.person_id AND c.movie_id = ah.movie_id
WHERE 
    m.production_year IS NOT NULL
    AND ak.name IS NOT NULL
GROUP BY 
    a.id, ak.name, m.title, m.production_year
HAVING 
    COUNT(DISTINCT c.id) > 1
ORDER BY 
    m.production_year DESC,
    total_cast DESC,
    rank_by_cast_count ASC;
