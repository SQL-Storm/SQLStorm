
WITH ranked_movies AS (
    SELECT 
        t.title, 
        t.production_year, 
        COUNT(ci.id) AS cast_count,
        AVG(CASE WHEN ci.note IS NULL THEN 0 ELSE 1 END) AS avg_note_present,
        ROW_NUMBER() OVER(PARTITION BY t.production_year ORDER BY COUNT(ci.id) DESC) AS rank
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        t.production_year >= 2000
        AND (k.keyword LIKE '%action%' OR k.keyword LIKE '%comedy%' OR k.keyword LIKE '%drama%')
    GROUP BY 
        t.title, t.production_year
),
filtered_movies AS (
    SELECT 
        rm.title, 
        rm.production_year,
        rm.cast_count,
        rm.avg_note_present
    FROM 
        ranked_movies rm
    WHERE 
        rm.rank <= 5 
)
SELECT 
    fm.title, 
    fm.production_year,
    fm.cast_count,
    STRING_AGG(DISTINCT CONCAT_WS(' - ', co.name, ct.kind) ORDER BY co.name) AS company_info,
    COALESCE(SUM(CASE WHEN mi.info_type_id = 2 THEN LENGTH(mi.info) ELSE 0 END), 0) AS total_duration,
    MAX(ROW_NUMBER() OVER (PARTITION BY fm.production_year ORDER BY fm.cast_count DESC)) AS genre_influence_level
FROM 
    filtered_movies fm
LEFT JOIN 
    movie_companies mc ON fm.title = (SELECT t.title FROM aka_title t WHERE t.production_year = fm.production_year LIMIT 1)
LEFT JOIN 
    company_name co ON mc.company_id = co.id
LEFT JOIN 
    company_type ct ON mc.company_type_id = ct.id
LEFT JOIN 
    movie_info mi ON fm.production_year = mi.movie_id AND mi.info_type_id IN (1, 2) 
GROUP BY 
    fm.title, fm.production_year, fm.cast_count
HAVING 
    COUNT(fm.cast_count) > 0
ORDER BY 
    fm.production_year DESC;
