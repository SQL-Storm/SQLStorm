
WITH RankedMovies AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        t.kind_id,
        t.phonetic_code,
        COUNT(DISTINCT ci.person_id) AS cast_count,
        STRING_AGG(DISTINCT ak.name, ', ') AS cast_names
    FROM 
        aka_title t
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        aka_name ak ON ci.person_id = ak.person_id
    GROUP BY 
        t.title, t.production_year, t.kind_id, t.phonetic_code
),
TopMovies AS (
    SELECT 
        movie_title,
        production_year,
        cast_count,
        ROW_NUMBER() OVER (ORDER BY cast_count DESC) AS rank
    FROM 
        RankedMovies
    WHERE 
        production_year >= 2000
)
SELECT 
    tm.movie_title,
    tm.production_year,
    tm.cast_count,
    ct.kind AS movie_genre,
    rn.name AS representative_name
FROM 
    TopMovies tm
JOIN 
    aka_title t ON tm.movie_title = t.title
JOIN 
    kind_type ct ON t.kind_id = ct.id
LEFT JOIN 
    person_info pi ON t.imdb_id = pi.person_id
LEFT JOIN 
    act_name rn ON pi.info_type_id = (SELECT id FROM info_type WHERE info = 'Representative')
WHERE 
    tm.rank <= 10
ORDER BY 
    tm.cast_count DESC;
