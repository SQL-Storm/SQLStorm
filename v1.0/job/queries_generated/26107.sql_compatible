
WITH movie_cast AS (
    SELECT 
        c.movie_id,
        a.name AS actor_name,
        t.title AS movie_title,
        t.production_year,
        r.role AS actor_role,
        ROW_NUMBER() OVER(PARTITION BY c.movie_id ORDER BY c.nr_order) AS actor_rank
    FROM 
        cast_info c
    JOIN 
        aka_name a ON c.person_id = a.person_id
    JOIN 
        title t ON c.movie_id = t.id
    JOIN 
        role_type r ON c.role_id = r.id
),
movie_keywords AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
),
movie_info_summary AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        m.production_year,
        STRING_AGG(DISTINCT mi.info, '; ') AS additional_info,
        COUNT(DISTINCT c.actor_name) AS num_actors,
        COALESCE(mk.keywords, 'No Keywords') AS keywords
    FROM 
        title m
    LEFT JOIN 
        movie_info mi ON m.id = mi.movie_id
    LEFT JOIN 
        movie_cast c ON m.id = c.movie_id
    LEFT JOIN 
        movie_keywords mk ON m.id = mk.movie_id
    GROUP BY 
        m.id, m.title, m.production_year
)
SELECT 
    movie_id,
    title,
    production_year,
    additional_info,
    num_actors,
    keywords
FROM 
    movie_info_summary
WHERE 
    production_year BETWEEN 2000 AND 2020 
    AND num_actors > 5
ORDER BY 
    production_year DESC, 
    title;
