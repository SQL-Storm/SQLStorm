
SELECT 
    ak.name AS aka_name,
    t.title AS movie_title,
    p.name AS person_name,
    r.role AS role_type
FROM 
    aka_name ak
JOIN 
    cast_info ci ON ak.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
JOIN 
    role_type r ON ci.role_id = r.id
JOIN 
    person p ON ak.person_id = p.id  -- Assuming you meant to join person table for person_name
WHERE 
    t.production_year = 2023
GROUP BY 
    ak.name, t.title, p.name, r.role
ORDER BY 
    ak.name, t.title;
