
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
NameVariants AS (
    SELECT 
        a.id AS aka_id,
        a.name,
        n.gender,
        COALESCE(n.surname_pcode, 'UNKNOWN') AS surname_code,
        NULLIF(n.name_pcode_cf, '') AS pcode_cf
    FROM 
        aka_name a
    LEFT JOIN 
        name n ON a.person_id = n.imdb_id
    WHERE 
        n.gender IS NOT NULL OR n.name_pcode_cf IS NULL
),
MovieCast AS (
    SELECT 
        c.movie_id,
        COUNT(DISTINCT n.id) AS actor_count,
        STRING_AGG(DISTINCT n.name, ', ') AS actors_list
    FROM 
        cast_info c
    INNER JOIN 
        NameVariants n ON c.person_id = n.aka_id
    GROUP BY 
        c.movie_id
),
MovieDetails AS (
    SELECT 
        mv.movie_id,
        mv.title,
        mv.production_year,
        COALESCE(mc.actor_count, 0) AS actor_count,
        mc.actors_list
    FROM 
        RankedMovies mv
    LEFT JOIN 
        MovieCast mc ON mv.movie_id = mc.movie_id
)
SELECT 
    md.title,
    md.production_year,
    md.actor_count,
    CASE 
        WHEN md.actor_count > 0 THEN 'Has Cast'
        ELSE 'No Cast'
    END AS cast_status,
    CASE 
        WHEN md.actor_count > 10 THEN 'Blockbuster'
        WHEN md.actor_count BETWEEN 1 AND 10 THEN 'Indie Film'
        ELSE 'Unknown'
    END AS movie_type,
    ARRAY_AGG(DISTINCT COALESCE(n.name, 'No Name Available')) AS name_variants,
    ARRAY_AGG(DISTINCT COALESCE(CAST(uint.id AS TEXT), 'NULL CAST_ID')) AS cast_info_ids
FROM 
    MovieDetails md
LEFT JOIN 
    aka_title t ON md.movie_id = t.id
LEFT JOIN 
    cast_info ci ON ci.movie_id = md.movie_id
LEFT JOIN 
    NameVariants n ON ci.person_id = n.aka_id
GROUP BY 
    md.movie_id, md.title, md.production_year, md.actor_count
HAVING 
    COUNT(n.id) IS NOT NULL
ORDER BY 
    md.actor_count DESC, md.production_year DESC;
