
WITH RankedMovies AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        m.production_year,
        ROW_NUMBER() OVER (PARTITION BY m.production_year ORDER BY m.title) AS rank
    FROM 
        aka_title m
    WHERE 
        m.production_year IS NOT NULL
), 
ActorMovieConnections AS (
    SELECT 
        c.movie_id,
        a.id AS actor_id,
        a.name AS actor_name,
        rm.rank AS year_rank
    FROM 
        cast_info c
    JOIN 
        aka_name a ON c.person_id = a.person_id
    JOIN 
        RankedMovies rm ON c.movie_id = rm.movie_id
), 
MovieDetails AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        STRING_AGG(CONCAT(a.actor_name, ' (Rank: ', a.year_rank, ')'), ', ') AS actors
    FROM 
        RankedMovies rm
    LEFT JOIN 
        ActorMovieConnections a ON rm.movie_id = a.movie_id
    GROUP BY 
        rm.movie_id, rm.title, rm.production_year
)

SELECT 
    md.title,
    md.production_year,
    md.actors,
    ct.kind AS company_type,
    ci.note AS company_note,
    ki.keyword AS keywords
FROM 
    MovieDetails md
LEFT JOIN 
    movie_companies mc ON md.movie_id = mc.movie_id
LEFT JOIN 
    company_name cn ON mc.company_id = cn.id
LEFT JOIN 
    company_type ct ON mc.company_type_id = ct.id
LEFT JOIN 
    movie_keyword mk ON md.movie_id = mk.movie_id
LEFT JOIN 
    keyword ki ON mk.keyword_id = ki.id
LEFT JOIN 
    movie_info mi ON md.movie_id = mi.movie_id
WHERE 
    md.production_year > 2000
ORDER BY 
    md.production_year DESC, md.title;
