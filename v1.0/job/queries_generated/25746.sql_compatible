
WITH MovieDetails AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        ak.name AS actor_name,
        ct.kind AS cast_type,
        STRING_AGG(kw.keyword, ', ') AS keywords,
        COUNT(DISTINCT cc.id) AS complete_cast_count
    FROM
        aka_title t
    JOIN
        movie_keyword mk ON t.id = mk.movie_id
    JOIN
        keyword kw ON mk.keyword_id = kw.id
    JOIN
        cast_info ci ON t.id = ci.movie_id
    JOIN
        aka_name ak ON ci.person_id = ak.person_id
    JOIN
        role_type ct ON ci.role_id = ct.id
    LEFT JOIN
        complete_cast cc ON t.id = cc.movie_id
    WHERE
        t.production_year > 2000 
        AND ak.name IS NOT NULL
    GROUP BY
        t.id, t.title, t.production_year, ak.name, ct.kind
),
TopMovies AS (
    SELECT 
        movie_title,
        production_year,
        actor_name,
        cast_type,
        keywords,
        complete_cast_count,
        ROW_NUMBER() OVER (PARTITION BY production_year ORDER BY complete_cast_count DESC) AS rn
    FROM 
        MovieDetails
)
SELECT 
    movie_title,
    production_year,
    actor_name,
    cast_type,
    keywords,
    complete_cast_count
FROM 
    TopMovies 
WHERE 
    rn <= 5
ORDER BY 
    production_year, complete_cast_count DESC;
