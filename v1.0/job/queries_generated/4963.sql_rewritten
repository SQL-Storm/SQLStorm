WITH RankedMovies AS (
    SELECT 
        a.id AS aka_id,
        t.id AS title_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC, t.title) AS rank_year
    FROM 
        aka_title a
    JOIN 
        title t ON a.movie_id = t.id
    WHERE 
        t.production_year IS NOT NULL
), 
MovieDetails AS (
    SELECT 
        rm.*,
        COALESCE(c.name, 'Unknown') AS director_name,
        COUNT(DISTINCT mc.company_id) AS company_count
    FROM 
        RankedMovies rm
    LEFT JOIN 
        complete_cast cc ON rm.title_id = cc.movie_id
    LEFT JOIN 
        cast_info c ON cc.subject_id = c.person_id AND c.role_id = (SELECT id FROM role_type WHERE role = 'Director')
    LEFT JOIN 
        movie_companies mc ON rm.title_id = mc.movie_id
    GROUP BY 
        rm.aka_id, rm.title_id, rm.title, rm.production_year, director_name
)
SELECT 
    md.title,
    md.production_year,
    md.director_name,
    md.company_count,
    COUNT(mk.keyword) AS keyword_count,
    AVG(CASE WHEN mi.info LIKE '%Award%' THEN 1 ELSE 0 END) AS awards_info
FROM 
    MovieDetails md
LEFT JOIN 
    movie_keyword mk ON md.title_id = mk.movie_id
LEFT JOIN 
    movie_info mi ON md.title_id = mi.movie_id
WHERE 
    md.rank_year <= 5 
GROUP BY 
    md.title, md.production_year, md.director_name, md.company_count
ORDER BY 
    md.production_year DESC, keyword_count DESC;