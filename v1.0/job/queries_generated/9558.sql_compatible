
SELECT 
    t.title AS movie_title,
    a.name AS actor_name,
    p.gender AS actor_gender,
    COUNT(DISTINCT kw.keyword) AS total_keywords,
    AVG(m.production_year) AS avg_production_year,
    c.kind AS company_type
FROM 
    aka_name a
JOIN 
    cast_info ci ON a.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
JOIN 
    movie_keyword mk ON t.id = mk.movie_id
JOIN 
    keyword kw ON mk.keyword_id = kw.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_type c ON mc.company_type_id = c.id
JOIN 
    movie_info mi ON t.id = mi.movie_id
JOIN 
    person_info p ON a.person_id = p.person_id
WHERE 
    mi.info_type_id IN (SELECT id FROM info_type WHERE info = 'box office')
GROUP BY 
    t.title, a.name, p.gender, c.kind, m.production_year
HAVING 
    COUNT(DISTINCT kw.keyword) > 5
ORDER BY 
    avg_production_year DESC;
