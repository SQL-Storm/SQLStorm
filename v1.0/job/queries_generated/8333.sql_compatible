
WITH movie_data AS (
    SELECT 
        a.name AS actor_name,
        t.title AS movie_title,
        ct.kind AS company_type,
        k.keyword AS keywords,
        COALESCE(mi.info, 'No Info') AS additional_info,
        COUNT(ci.id) AS total_cast_members
    FROM 
        aka_name a
    JOIN 
        cast_info ci ON a.person_id = ci.person_id
    JOIN 
        aka_title t ON ci.movie_id = t.movie_id
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name cn ON mc.company_id = cn.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        movie_info mi ON t.id = mi.movie_id
    GROUP BY 
        a.name, t.title, ct.kind, k.keyword, mi.info
    ORDER BY 
        total_cast_members DESC
)
SELECT 
    actor_name,
    movie_title,
    company_type,
    STRING_AGG(keywords, ', ') AS all_keywords,
    additional_info,
    total_cast_members
FROM 
    movie_data
WHERE 
    company_type IS NOT NULL
GROUP BY 
    actor_name, movie_title, company_type, additional_info, total_cast_members
HAVING 
    total_cast_members > 1
ORDER BY 
    total_cast_members DESC;
