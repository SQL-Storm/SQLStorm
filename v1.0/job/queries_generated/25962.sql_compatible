
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY LENGTH(t.title) DESC) AS title_length_rank
    FROM 
        aka_title t
),
TopRatedMovies AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year
    FROM 
        RankedMovies rm
    WHERE 
        rm.title_length_rank <= 5
),
MovieCastDetails AS (
    SELECT 
        tm.movie_id,
        c.person_id,
        p.name AS actor_name,
        r.role AS role_name,
        c.nr_order
    FROM 
        TopRatedMovies tm
    JOIN 
        cast_info c ON tm.movie_id = c.movie_id
    JOIN 
        person_info p ON c.person_id = p.person_id
    JOIN 
        role_type r ON c.role_id = r.id
)
SELECT 
    t.title,
    t.production_year,
    COUNT(DISTINCT mc.company_id) AS num_companies,
    COUNT(DISTINCT CONCAT(mcd.actor_name, ' - ', mcd.role_name)) AS num_actors
FROM 
    TopRatedMovies t
LEFT JOIN 
    movie_companies mc ON t.movie_id = mc.movie_id
LEFT JOIN 
    MovieCastDetails mcd ON t.movie_id = mcd.movie_id
GROUP BY 
    t.title, t.production_year
ORDER BY 
    t.production_year DESC, 
    t.title ASC;
