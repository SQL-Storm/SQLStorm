
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.id) AS row_num,
        COUNT(*) OVER (PARTITION BY t.production_year) AS total_movies
    FROM
        aka_title t
    WHERE
        t.production_year IS NOT NULL
        AND t.kind_id IN (SELECT id FROM kind_type WHERE kind IN ('movie', 'feature'))
),
CompanyDetails AS (
    SELECT 
        mc.movie_id,
        c.name AS company_name,
        ct.kind AS company_type,
        ROW_NUMBER() OVER (PARTITION BY mc.movie_id ORDER BY c.name) AS company_rank
    FROM
        movie_companies mc
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
),
DirectorAndCast AS (
    SELECT 
        ci.movie_id,
        ak.name AS director_name,
        ak.person_id,
        ci.role_id,
        RANK() OVER (PARTITION BY ci.movie_id ORDER BY ak.name) AS cast_rank
    FROM 
        cast_info ci
    JOIN 
        aka_name ak ON ci.person_id = ak.person_id
    WHERE 
        ci.person_role_id IN (SELECT id FROM role_type WHERE role IN ('director'))
),
MovieKeywords AS (
    SELECT
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
)

SELECT 
    rm.movie_id,
    rm.title,
    rm.production_year,
    COALESCE(cd.company_name, 'Independent') AS company_name,
    COALESCE(cd.company_type, 'Unknown') AS company_type,
    dk.director_name,
    ARRAY_AGG(DISTINCT dk.person_id) AS directors,
    mk.keywords,
    rm.total_movies
FROM 
    RankedMovies rm
LEFT JOIN 
    CompanyDetails cd ON rm.movie_id = cd.movie_id AND cd.company_rank = 1   
LEFT JOIN 
    DirectorAndCast dk ON rm.movie_id = dk.movie_id
LEFT JOIN 
    MovieKeywords mk ON mk.movie_id = rm.movie_id
WHERE 
    rm.row_num <= 5  
GROUP BY 
    rm.movie_id, rm.title, rm.production_year, cd.company_name, cd.company_type, dk.director_name, rm.total_movies
HAVING 
    COUNT(dk.person_id) > 0  
ORDER BY 
    rm.production_year DESC, 
    rm.total_movies DESC, 
    rm.title;
