
SELECT 
    a.name AS actor_name,
    m.title AS movie_title,
    c.nr_order AS role_order,
    p.info AS person_info,
    t.production_year AS year_of_release
FROM 
    aka_name a
JOIN 
    cast_info c ON a.person_id = c.person_id
JOIN 
    title m ON c.movie_id = m.id
JOIN 
    movie_info p ON m.id = p.movie_id
JOIN 
    kind_type t ON m.kind_id = t.id
WHERE 
    t.kind = 'Feature Film'
GROUP BY 
    a.name, m.title, c.nr_order, p.info, t.production_year
ORDER BY 
    t.production_year DESC, c.nr_order;
