
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    c.nr_order AS role_order,
    rt.role AS role_name,
    STRING_AGG(DISTINCT cn.name ORDER BY cn.name) AS company_names,
    STRING_AGG(DISTINCT kw.keyword ORDER BY kw.keyword) AS keywords
FROM 
    aka_name a
JOIN 
    cast_info c ON a.person_id = c.person_id
JOIN 
    title t ON c.movie_id = t.id
JOIN 
    role_type rt ON c.role_id = rt.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name cn ON mc.company_id = cn.id
LEFT JOIN 
    movie_keyword mk ON t.id = mk.movie_id
LEFT JOIN 
    keyword kw ON mk.keyword_id = kw.id
WHERE 
    t.production_year >= 2000
    AND rt.role LIKE '%actor%'
GROUP BY 
    a.name, t.title, c.nr_order, rt.role, t.production_year
HAVING 
    COUNT(DISTINCT cn.id) > 1
ORDER BY 
    t.production_year DESC, actor_name;
