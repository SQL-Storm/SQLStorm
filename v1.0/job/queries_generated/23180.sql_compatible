
WITH RankedMovies AS (
    SELECT 
        mt.id AS movie_id,
        mt.title,
        mt.production_year,
        ROW_NUMBER() OVER (PARTITION BY mt.production_year ORDER BY mt.id) AS rank
    FROM 
        aka_title mt 
    WHERE 
        mt.production_year IS NOT NULL
), 

ActorRoles AS (
    SELECT 
        ak.name AS actor_name,
        ci.movie_id,
        r.role AS role_name,
        COALESCE(SUM(mk.keyword), 0) AS keyword_count
    FROM 
        aka_name ak
    JOIN 
        cast_info ci ON ak.person_id = ci.person_id
    LEFT JOIN 
        role_type r ON ci.role_id = r.id
    LEFT JOIN 
        movie_keyword mk ON ci.movie_id = mk.movie_id
    GROUP BY 
        ak.name, ci.movie_id, r.role
),

MovieCompanies AS (
    SELECT 
        mc.movie_id,
        COUNT(DISTINCT cn.name) AS company_count,
        STRING_AGG(DISTINCT cn.name, ', ') AS company_names
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    WHERE 
        cn.country_code IS NOT NULL
    GROUP BY 
        mc.movie_id
),

FinalResults AS (
    SELECT 
        rm.title,
        rm.production_year,
        ar.actor_name,
        ar.role_name,
        mc.company_count,
        mc.company_names,
        ar.keyword_count,
        CASE 
            WHEN ar.keyword_count > 5 THEN 'Highly Tagged'
            WHEN ar.keyword_count BETWEEN 3 AND 5 THEN 'Moderately Tagged'
            ELSE 'Few Tags'
        END AS tagging_category
    FROM 
        RankedMovies rm
    JOIN 
        ActorRoles ar ON rm.movie_id = ar.movie_id
    LEFT JOIN 
        MovieCompanies mc ON rm.movie_id = mc.movie_id
)

SELECT 
    title,
    production_year,
    actor_name,
    role_name,
    COALESCE(company_count, 0) AS company_count,
    COALESCE(company_names, 'None') AS company_names,
    tagging_category,
    CASE 
        WHEN production_year < 2000 THEN 'Classic'
        WHEN production_year BETWEEN 2000 AND 2010 THEN 'Modern'
        ELSE 'Contemporary'
    END AS era_category
FROM 
    FinalResults
WHERE 
    tagging_category <> 'Few Tags'
ORDER BY 
    production_year DESC, 
    actor_name ASC
LIMIT 100;
