
WITH RECURSIVE MovieHierarchy AS (
    SELECT 
        m.id AS movie_id,
        t.title,
        t.production_year,
        1 AS level
    FROM 
        aka_title t
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    WHERE 
        c.name ILIKE '%Universal%'
    
    UNION ALL
    
    SELECT 
        mh.movie_id,
        t2.title,
        t2.production_year,
        mh.level + 1
    FROM 
        MovieHierarchy mh
    JOIN 
        movie_link ml ON ml.movie_id = mh.movie_id
    JOIN 
        aka_title t2 ON ml.linked_movie_id = t2.id
)

SELECT 
    mh.movie_id,
    mh.title,
    mh.production_year,
    ROW_NUMBER() OVER (PARTITION BY mh.production_year ORDER BY mh.level DESC) AS movie_rank,
    (SELECT COUNT(*) 
     FROM movie_info mi 
     WHERE mi.movie_id = mh.movie_id 
     AND mi.info_type_id IN (SELECT id FROM info_type WHERE info ILIKE '%box office%')) AS box_office_count,
    COALESCE((SELECT STRING_AGG(DISTINCT ak.name, ', ') 
              FROM aka_name ak 
              JOIN cast_info ci ON ak.person_id = ci.person_id 
              WHERE ci.movie_id = mh.movie_id), 'No Cast') AS cast_names
FROM 
    MovieHierarchy mh
LEFT JOIN 
    complete_cast cc ON mh.movie_id = cc.movie_id
LEFT JOIN 
    title t ON mh.movie_id = t.id
WHERE 
    mh.level <= 3
    AND (mh.production_year IS NOT NULL AND mh.production_year > 2000)
GROUP BY 
    mh.movie_id, mh.title, mh.production_year, mh.level
ORDER BY 
    mh.production_year DESC, movie_rank;
