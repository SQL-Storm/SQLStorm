
WITH movie_details AS (
    SELECT
        t.id AS movie_id,
        t.title AS movie_title,
        t.production_year,
        STRING_AGG(DISTINCT ak.name, ', ') AS aka_names,
        STRING_AGG(DISTINCT c.name, ', ') AS companies,
        STRING_AGG(DISTINCT m.keyword, ', ') AS keywords,
        COUNT(DISTINCT ca.person_id) AS cast_count
    FROM
        aka_title t
    LEFT JOIN
        movie_keyword m ON t.id = m.movie_id
    LEFT JOIN
        aka_name ak ON t.id = ak.movie_id
    LEFT JOIN
        movie_companies mc ON t.id = mc.movie_id
    LEFT JOIN
        company_name c ON mc.company_id = c.id
    LEFT JOIN
        cast_info ca ON t.id = ca.movie_id
    WHERE
        t.production_year BETWEEN 2000 AND 2023
        AND t.kind_id IN (SELECT id FROM kind_type WHERE kind LIKE 'movie')
    GROUP BY
        t.id, t.title, t.production_year
),
top_movies AS (
    SELECT
        movie_id,
        movie_title,
        production_year,
        aka_names,
        companies,
        keywords,
        cast_count,
        RANK() OVER (ORDER BY cast_count DESC) AS movie_rank
    FROM
        movie_details
)
SELECT
    movie_id,
    movie_title,
    production_year,
    aka_names,
    companies,
    keywords,
    cast_count
FROM
    top_movies
WHERE
    movie_rank <= 10
ORDER BY
    production_year DESC;
