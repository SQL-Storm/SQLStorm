WITH MovieDetails AS (
    SELECT 
        m.id AS movie_id,
        m.title,
        m.production_year,
        STRING_AGG(DISTINCT c.name, ', ') AS cast_names,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords,
        STRING_AGG(DISTINCT ci.kind, ', ') AS companies,
        STRING_AGG(DISTINCT pi.info, ', ') AS person_info
    FROM 
        title m
    LEFT JOIN 
        movie_info mi ON m.id = mi.movie_id
    LEFT JOIN 
        movie_keyword mk ON m.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN 
        movie_companies mc ON m.id = mc.movie_id
    LEFT JOIN 
        company_name c ON mc.company_id = c.id
    LEFT JOIN 
        complete_cast cc ON m.id = cc.movie_id
    LEFT JOIN 
        cast_info ci ON cc.subject_id = ci.person_id
    LEFT JOIN 
        person_info pi ON ci.person_id = pi.person_id 
    WHERE 
        m.production_year >= 2000 
    GROUP BY 
        m.id, m.title, m.production_year
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    LENGTH(md.cast_names) AS cast_length,
    LENGTH(md.keywords) AS keyword_length,
    LENGTH(md.companies) AS companies_length,
    LENGTH(md.person_info) AS person_info_length
FROM 
    MovieDetails md
ORDER BY 
    md.production_year DESC, cast_length DESC;