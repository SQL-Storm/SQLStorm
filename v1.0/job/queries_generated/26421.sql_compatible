
WITH movie_actors AS (
    SELECT 
        a.id AS actor_id,
        a.name AS actor_name,
        c.movie_id
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
),
movie_details AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        STRING_AGG(DISTINCT ka.actor_name ORDER BY ka.actor_name) AS actor_list
    FROM 
        aka_title t
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        movie_actors ka ON t.id = ka.movie_id
    GROUP BY 
        t.id, t.title, t.production_year
),
movies_with_info AS (
    SELECT 
        md.movie_id,
        md.title,
        md.production_year,
        mi.info AS movie_info
    FROM 
        movie_details md
    LEFT JOIN 
        movie_info mi ON md.movie_id = mi.movie_id
    WHERE 
        mi.info_type_id IN (
            SELECT id FROM info_type WHERE info = 'Plot'
        )
),
final_benchmark AS (
    SELECT 
        mw.movie_id,
        mw.title,
        mw.production_year,
        mw.movie_info,
        CASE
            WHEN mw.production_year < 2000 THEN 'Classic'
            WHEN mw.production_year BETWEEN 2000 AND 2015 THEN 'Modern'
            ELSE 'Recent'
        END AS era,
        LENGTH(mw.actor_list) AS actor_list_length
    FROM 
        movies_with_info mw
)
SELECT 
    era,
    COUNT(*) AS total_movies,
    AVG(actor_list_length) AS average_actor_length
FROM 
    final_benchmark
GROUP BY 
    era
ORDER BY 
    era;
