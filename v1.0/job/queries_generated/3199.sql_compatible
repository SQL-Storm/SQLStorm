
WITH ranked_titles AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        RANK() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        aka_title t
),
movie_details AS (
    SELECT 
        mt.movie_id,
        mt.company_id,
        c.name AS company_name,
        COUNT(mk.keyword_id) AS keyword_count
    FROM 
        movie_companies mt 
    JOIN 
        company_name c ON mt.company_id = c.id
    LEFT JOIN 
        movie_keyword mk ON mt.movie_id = mk.movie_id
    GROUP BY 
        mt.movie_id, mt.company_id, c.name
),
cast_roles AS (
    SELECT 
        ci.movie_id,
        COUNT(DISTINCT ci.person_id) AS actor_count,
        STRING_AGG(DISTINCT a.name, ', ') AS actor_names
    FROM 
        cast_info ci
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    GROUP BY 
        ci.movie_id
),
movie_summary AS (
    SELECT 
        mt.movie_id,
        COALESCE(dt.company_name, 'Unknown') AS company_name,
        s.actor_count,
        s.actor_names,
        rt.title,
        rt.production_year
    FROM 
        movie_details dt
    FULL OUTER JOIN 
        cast_roles s ON dt.movie_id = s.movie_id
    JOIN 
        ranked_titles rt ON rt.title_id = dt.movie_id
)
SELECT 
    ms.title,
    ms.production_year,
    ms.company_name,
    ms.actor_count,
    ms.actor_names,
    CASE 
        WHEN ms.actor_count IS NULL OR ms.actor_count = 0 THEN 'No Actors'
        ELSE 'Actors Present'
    END AS actor_presence
FROM 
    movie_summary ms
WHERE 
    ms.production_year > 2000
    AND (ms.actor_count >= 5 OR ms.company_name != 'Unknown')
ORDER BY 
    ms.production_year DESC, ms.title ASC
LIMIT 100;
