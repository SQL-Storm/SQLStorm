
SELECT 
    a.name AS aka_name,
    t.title AS movie_title,
    p.name AS person_name,
    r.role AS role,
    c.note AS cast_note
FROM 
    aka_name a
JOIN 
    cast_info c ON a.person_id = c.person_id
JOIN 
    title t ON c.movie_id = t.id
JOIN 
    role_type r ON c.role_id = r.id
JOIN 
    person_info pi ON a.person_id = pi.person_id
WHERE 
    pi.info_type_id IN (SELECT id FROM info_type WHERE info = 'birth date')
GROUP BY 
    a.name, t.title, p.name, r.role, c.note
ORDER BY 
    t.production_year DESC, a.name;
