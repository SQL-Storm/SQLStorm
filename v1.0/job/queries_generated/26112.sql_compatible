
WITH ranked_titles AS (
    SELECT 
        t.title, 
        t.production_year, 
        COUNT(DISTINCT c.person_id) AS num_actors,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT c.person_id) DESC) AS rank
    FROM 
        title t
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    JOIN 
        cast_info c ON cc.subject_id = c.id
    GROUP BY 
        t.title, t.production_year
),

top_actor_movies AS (
    SELECT 
        rt.title, 
        rt.production_year, 
        rt.num_actors
    FROM 
        ranked_titles rt
    WHERE 
        rt.rank <= 5
),

actor_info AS (
    SELECT 
        ak.name AS actor_name, 
        COALESCE(GROUP_CONCAT(DISTINCT tt.title ORDER BY tt.title), '') AS movies,
        ak.person_id
    FROM 
        aka_name ak
    JOIN 
        cast_info ci ON ak.person_id = ci.person_id
    JOIN 
        top_actor_movies tt ON ci.movie_id = tt.title
    GROUP BY 
        ak.name, ak.person_id
)

SELECT 
    a.actor_name,
    a.movies,
    tt.production_year, 
    tt.num_actors
FROM 
    actor_info a
JOIN 
    top_actor_movies tt ON a.person_id IN (
        SELECT c.person_id 
        FROM cast_info c 
        WHERE c.movie_id IN (
            SELECT id FROM title WHERE production_year = tt.production_year
        )
    )
ORDER BY 
    tt.production_year DESC, a.actor_name;
