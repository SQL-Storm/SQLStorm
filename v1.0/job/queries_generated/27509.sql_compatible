
WITH MovieDetails AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        STRING_AGG(DISTINCT c.role_id, ',') AS roles,
        COUNT(DISTINCT m.company_id) AS company_count,
        COUNT(DISTINCT kw.keyword) AS keyword_count
    FROM 
        title t
    LEFT JOIN 
        complete_cast cc ON cc.movie_id = t.id
    LEFT JOIN 
        cast_info c ON c.movie_id = t.id
    LEFT JOIN 
        movie_companies m ON m.movie_id = t.id
    LEFT JOIN 
        movie_keyword kw ON kw.movie_id = t.id
    GROUP BY 
        t.id, t.title, t.production_year
),
AkaNames AS (
    SELECT 
        ak.person_id,
        ak.name,
        ac.title AS movie_title,
        ac.production_year
    FROM 
        aka_name ak
    JOIN 
        cast_info ci ON ci.person_id = ak.person_id
    JOIN 
        MovieDetails ac ON ac.movie_id = ci.movie_id
),
KeywordStats AS (
    SELECT 
        mk.movie_id,
        k.keyword,
        COUNT(*) AS usage_count
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id, k.keyword
)
SELECT 
    md.movie_id,
    md.title,
    md.production_year,
    ak.name AS actor_name,
    md.roles,
    md.company_count,
    md.keyword_count,
    ks.keyword,
    ks.usage_count
FROM 
    MovieDetails md
LEFT JOIN 
    AkaNames ak ON ak.movie_title = md.title AND ak.production_year = md.production_year
LEFT JOIN 
    KeywordStats ks ON ks.movie_id = md.movie_id
ORDER BY 
    md.production_year DESC, 
    md.title, 
    ak.name;
