
WITH ranked_titles AS (
    SELECT 
        t.title, 
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS year_rank
    FROM 
        aka_title t
    WHERE 
        t.kind_id IN (SELECT id FROM kind_type WHERE kind LIKE 'feature%')
),
actor_movie_info AS (
    SELECT 
        a.name AS actor_name,
        COUNT(DISTINCT c.movie_id) AS movie_count,
        AVG(COALESCE(mi.info, 0)) AS avg_movie_rating
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    LEFT JOIN 
        movie_info mi ON c.movie_id = mi.movie_id AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'rating')
    GROUP BY 
        a.name
),
top_actors AS (
    SELECT 
        actor_name, 
        movie_count, 
        avg_movie_rating,
        DENSE_RANK() OVER (ORDER BY movie_count DESC) AS rank
    FROM 
        actor_movie_info
    WHERE 
        movie_count > 1
)
SELECT 
    rt.title,
    rt.production_year,
    ta.actor_name,
    ta.movie_count,
    COALESCE(ta.avg_movie_rating, 'N/A') AS avg_movie_rating
FROM 
    ranked_titles rt
LEFT JOIN 
    top_actors ta ON rt.year_rank = ta.rank
WHERE 
    rt.production_year BETWEEN 2000 AND 2020
ORDER BY 
    rt.production_year DESC, rt.title ASC;
