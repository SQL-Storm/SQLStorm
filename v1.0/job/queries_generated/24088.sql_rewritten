WITH RankedMovies AS (
    SELECT
        t.id AS title_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM
        title t
    WHERE
        t.production_year IS NOT NULL
),

ActorCountCTE AS (
    SELECT
        ci.movie_id,
        COUNT(DISTINCT ci.person_id) AS actor_count
    FROM
        cast_info ci
    GROUP BY
        ci.movie_id
),

MovieDetails AS (
    SELECT
        tm.id AS movie_id,
        tm.title,
        tm.production_year,
        ac.actor_count,
        COALESCE(mci.note, 'No note') AS company_note
    FROM
        RankedMovies tm
    LEFT JOIN
        ActorCountCTE ac ON tm.title_id = ac.movie_id
    LEFT JOIN 
        movie_companies mc ON tm.title_id = mc.movie_id
    LEFT JOIN 
        company_name cn ON mc.company_id = cn.id
    LEFT JOIN 
        movie_info mi ON tm.title_id = mi.movie_id
    LEFT JOIN 
        movie_info_idx mii ON mi.movie_id = mii.movie_id AND mi.info_type_id = mii.info_type_id
    LEFT JOIN
        complete_cast cco ON cco.movie_id = tm.title_id
    LEFT JOIN
        complete_cast cc ON cc.movie_id = tm.title_id AND cc.status_id IS NULL
    GROUP BY
        tm.id, tm.title, tm.production_year, ac.actor_count, mci.note
),

FinalResults AS (
    SELECT
        md.movie_id,
        md.title,
        md.production_year,
        md.actor_count,
        CASE
            WHEN md.actor_count IS NULL THEN 'No actors available'
            WHEN md.actor_count > 5 THEN 'Many actors'
            ELSE 'Few actors'
        END AS actor_status
    FROM
        MovieDetails md
    WHERE
        md.production_year BETWEEN 2000 AND 2020
)

SELECT 
    fr.*,
    CASE 
        WHEN fr.production_year IS NULL THEN 'Unknown Year'
        ELSE CAST(fr.production_year AS text)
    END AS year_statement,
    CASE 
        WHEN fr.actor_count IS NULL THEN NULL
        ELSE fr.actor_count * 1.5 
    END AS adjusted_actor_count
FROM 
    FinalResults fr
ORDER BY 
    fr.production_year DESC, fr.actor_count DESC NULLS LAST;