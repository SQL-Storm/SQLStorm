
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id, 
        t.title, 
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.id) AS rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
MovieCasting AS (
    SELECT 
        m.movie_id, 
        COUNT(DISTINCT c.person_id) AS total_cast,
        AVG(CASE WHEN c.nr_order IS NOT NULL THEN c.nr_order ELSE 0 END) AS avg_order
    FROM 
        complete_cast m
    JOIN 
        cast_info c ON m.movie_id = c.movie_id
    GROUP BY 
        m.movie_id
),
TopMovies AS (
    SELECT 
        r.movie_id, 
        r.title,
        r.production_year,
        mc.total_cast,
        mc.avg_order
    FROM 
        RankedMovies r
    JOIN 
        MovieCasting mc ON r.movie_id = mc.movie_id
    WHERE 
        r.rank <= 5
)
SELECT 
    tm.title, 
    tm.production_year, 
    tm.total_cast,
    COALESCE(mk.keyword, 'No Keywords') AS keyword
FROM 
    TopMovies tm
LEFT JOIN 
    movie_keyword mk ON tm.movie_id = mk.movie_id
ORDER BY 
    tm.production_year DESC, 
    tm.total_cast DESC;
