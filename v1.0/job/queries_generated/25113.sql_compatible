
SELECT 
    a.name AS aka_name,
    t.title AS movie_title,
    p.info AS person_info,
    k.keyword AS movie_keyword,
    r.role AS person_role,
    c.kind AS company_type,
    mi.production_year,
    COUNT(DISTINCT m.id) AS movie_count,
    STRING_AGG(DISTINCT k.keyword, ', ') AS keyword_list
FROM 
    aka_name a 
JOIN 
    cast_info ci ON a.person_id = ci.person_id 
JOIN 
    title t ON ci.movie_id = t.id 
JOIN 
    person_info p ON a.person_id = p.person_id 
JOIN 
    movie_keyword mk ON t.id = mk.movie_id 
JOIN 
    keyword k ON mk.keyword_id = k.id 
JOIN 
    movie_companies mc ON t.id = mc.movie_id 
JOIN 
    company_name cn ON mc.company_id = cn.id 
JOIN 
    company_type c ON mc.company_type_id = c.id 
JOIN 
    role_type r ON ci.role_id = r.id 
JOIN 
    movie_info mi ON t.id = mi.movie_id 
WHERE 
    a.name IS NOT NULL 
    AND t.kind_id IN (SELECT id FROM kind_type WHERE kind = 'movie')
    AND p.info_type_id IN (SELECT id FROM info_type WHERE info = 'birth date')
    AND k.phonetic_code IS NOT NULL
    AND mi.production_year > 2000
GROUP BY 
    a.name, t.title, p.info, k.keyword, r.role, c.kind, mi.production_year
ORDER BY 
    movie_count DESC, a.name ASC;
