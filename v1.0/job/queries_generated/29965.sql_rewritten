WITH ActorTitles AS (
    SELECT 
        ak.name AS actor_name,
        ak.id AS actor_id,
        at.title AS movie_title,
        at.production_year,
        ROW_NUMBER() OVER(PARTITION BY ak.id ORDER BY at.production_year DESC) AS rank
    FROM 
        aka_name ak
    JOIN 
        cast_info ci ON ak.person_id = ci.person_id
    JOIN 
        aka_title at ON ci.movie_id = at.movie_id
),
GenreCounts AS (
    SELECT 
        at.kind_id,
        COUNT(DISTINCT at.id) AS genre_count
    FROM 
        aka_title at
    JOIN 
        kind_type kt ON at.kind_id = kt.id
    GROUP BY 
        at.kind_id
),
ActorGenre AS (
    SELECT 
        at.actor_id,
        at.actor_name,
        gc.kind AS genre,
        gc.genre_count
    FROM 
        ActorTitles at
    JOIN 
        movie_info mi ON at.movie_title = mi.info
    JOIN 
        movie_keyword mk ON mk.movie_id = mi.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        GenreCounts gc ON gc.kind_id = k.id
    WHERE 
        at.rank <= 3 
)
SELECT 
    actor_name,
    STRING_AGG(DISTINCT genre, ', ') AS genres,
    COUNT(DISTINCT movie_title) AS movie_count,
    SUM(genre_count) AS total_genre_count
FROM 
    ActorGenre
GROUP BY 
    actor_name
ORDER BY 
    movie_count DESC
LIMIT 10;