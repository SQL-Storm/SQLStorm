WITH RECURSIVE MovieCTE AS (
    SELECT 
        mt.id AS movie_id,
        mt.title,
        mt.production_year,
        mt.kind_id,
        1 AS level
    FROM 
        aka_title mt
    WHERE 
        mt.production_year >= 2000
    UNION ALL
    SELECT 
        mt.id,
        mt.title,
        mt.production_year,
        mt.kind_id,
        cte.level + 1
    FROM 
        aka_title mt
    INNER JOIN 
        MovieCTE cte ON mt.episode_of_id = cte.movie_id
    WHERE 
        cte.level < 10  
)
SELECT 
    ak.name AS actor_name, 
    at.title AS movie_title,
    at.production_year,
    ROW_NUMBER() OVER (PARTITION BY ak.person_id ORDER BY at.production_year DESC) AS movie_rank,
    COUNT(DISTINCT mc.company_id) AS company_count,
    (SELECT 
        COUNT(*)
     FROM 
        movie_keyword mk
     WHERE 
        mk.movie_id = at.id) AS keyword_count
FROM 
    cast_info ci
JOIN 
    aka_name ak ON ci.person_id = ak.person_id
JOIN 
    aka_title at ON ci.movie_id = at.movie_id
LEFT JOIN 
    movie_companies mc ON at.id = mc.movie_id
JOIN 
    MovieCTE cte ON at.id = cte.movie_id
WHERE 
    ak.name IS NOT NULL
    AND ak.name NOT LIKE '%Unnamed%'
GROUP BY 
    ak.name, at.title, at.production_year, ak.person_id
HAVING 
    COUNT(DISTINCT mc.company_id) > 0 
    AND AVG(cte.level) > 1.5
ORDER BY 
    actor_name, movie_rank;