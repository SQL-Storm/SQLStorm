
WITH MovieDetails AS (
    SELECT 
        a.title,
        a.production_year,
        k.keyword,
        ROW_NUMBER() OVER (PARTITION BY a.id ORDER BY a.production_year DESC) AS rn,
        a.id
    FROM 
        aka_title a
    LEFT JOIN 
        movie_keyword mk ON a.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        a.production_year BETWEEN 2000 AND 2023
), ActorStats AS (
    SELECT 
        c.movie_id,
        COUNT(DISTINCT c.person_id) AS actor_count,
        SUM(CASE WHEN r.role = 'Lead' THEN 1 ELSE 0 END) AS lead_roles
    FROM 
        cast_info c
    INNER JOIN 
        role_type r ON c.role_id = r.id
    GROUP BY 
        c.movie_id
), CompanyInfo AS (
    SELECT 
        mc.movie_id,
        COUNT(DISTINCT cn.id) AS company_count,
        STRING_AGG(DISTINCT cn.name, ', ') AS company_names
    FROM 
        movie_companies mc
    INNER JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        mc.movie_id
)

SELECT 
    md.title,
    md.production_year,
    COALESCE(as.actor_count, 0) AS total_actors,
    COALESCE(as.lead_roles, 0) AS total_leads,
    COALESCE(ci.company_count, 0) AS total_companies,
    ci.company_names
FROM 
    MovieDetails md
LEFT JOIN 
    ActorStats as ON md.id = as.movie_id
LEFT JOIN 
    CompanyInfo ci ON md.id = ci.movie_id
WHERE 
    md.rn = 1
ORDER BY 
    md.production_year DESC,
    total_actors DESC
FETCH FIRST 50 ROWS ONLY;
