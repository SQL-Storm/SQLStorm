
SELECT 
    a.name AS aka_name, 
    t.title AS movie_title, 
    p.name AS actor_name, 
    r.role AS role_type, 
    c.note AS cast_note
FROM 
    aka_name a
JOIN 
    cast_info c ON a.person_id = c.person_id
JOIN 
    title t ON c.movie_id = t.id
JOIN 
    role_type r ON c.role_id = r.id
JOIN 
    actor_info p ON c.person_id = p.person_id  -- Assuming you wanted to join with actors
WHERE 
    t.production_year >= 2000
GROUP BY 
    a.name, 
    t.title, 
    p.name, 
    r.role, 
    c.note
ORDER BY 
    t.production_year DESC, 
    a.name;
