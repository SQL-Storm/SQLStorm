
WITH RankedMovies AS (
    SELECT 
        t.title, 
        t.production_year, 
        COUNT(c.id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(c.id) DESC) AS rn
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    WHERE 
        t.production_year IS NOT NULL
    GROUP BY 
        t.id, t.title, t.production_year
), 
TopMovies AS (
    SELECT 
        title, 
        production_year 
    FROM 
        RankedMovies 
    WHERE 
        rn <= 5
), 
CompanyInfo AS (
    SELECT 
        m.movie_id, 
        co.name AS company_name, 
        ct.kind AS company_type
    FROM 
        movie_companies m
    JOIN 
        company_name co ON m.company_id = co.id
    JOIN 
        company_type ct ON m.company_type_id = ct.id
), 
KeywordCount AS (
    SELECT 
        mk.movie_id, 
        COUNT(mk.keyword_id) AS keyword_count 
    FROM 
        movie_keyword mk
    GROUP BY 
        mk.movie_id
)
SELECT 
    tm.title, 
    tm.production_year, 
    ci.company_name, 
    ci.company_type, 
    COALESCE(kc.keyword_count, 0) AS keyword_count
FROM 
    TopMovies tm
LEFT JOIN 
    CompanyInfo ci ON ci.movie_id IN (SELECT mc.movie_id FROM movie_companies mc WHERE mc.movie_id = tm.production_year)
LEFT JOIN 
    KeywordCount kc ON kc.movie_id IN (SELECT mk.movie_id FROM movie_keyword mk WHERE mk.movie_id = tm.production_year)
ORDER BY 
    tm.production_year DESC, 
    keyword_count DESC;
