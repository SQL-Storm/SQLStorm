
SELECT 
    t.title AS movie_title, 
    a.name AS actor_name, 
    c.kind AS character_role, 
    k.keyword AS movie_keywords, 
    cn.name AS company_name, 
    ti.salary AS estimated_budget, 
    m.info AS movie_info
FROM 
    title t
JOIN 
    cast_info c ON t.id = c.movie_id
JOIN 
    aka_name a ON c.person_id = a.person_id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name cn ON mc.company_id = cn.id
JOIN 
    movie_keyword mk ON t.id = mk.movie_id
JOIN 
    keyword k ON mk.keyword_id = k.id
JOIN 
    movie_info m ON t.id = m.movie_id
JOIN 
    info_type it ON m.info_type_id = it.id
JOIN 
    role_type rt ON c.role_id = rt.id
LEFT JOIN 
    (SELECT movie_id, AVG(budget) AS salary FROM movie_info GROUP BY movie_id) ti ON t.id = ti.movie_id
WHERE 
    t.production_year BETWEEN 2000 AND 2023
AND 
    c.nr_order < 5
AND 
    cn.country_code = 'USA'
GROUP BY 
    t.title, a.name, c.kind, k.keyword, cn.name, ti.salary, m.info, t.production_year
ORDER BY 
    t.production_year DESC, 
    a.name;
