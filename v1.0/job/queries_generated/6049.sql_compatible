
WITH MovieDetails AS (
    SELECT
        t.title,
        t.production_year,
        c.name AS company_name,
        STRING_AGG(DISTINCT k.keyword ORDER BY k.keyword) AS keywords,
        COALESCE(p.gender, 'Unknown') AS director_gender,
        a.name AS actor_name,
        COUNT(DISTINCT mci.subject_id) AS cast_count
    FROM
        title t
    JOIN
        movie_companies mc ON t.id = mc.movie_id
    JOIN
        company_name c ON mc.company_id = c.id
    LEFT JOIN
        movie_info mi ON t.id = mi.movie_id AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'Plot')
    LEFT JOIN
        movie_info_idx mii ON t.id = mii.movie_id
    LEFT JOIN
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN
        keyword k ON mk.keyword_id = k.id
    LEFT JOIN
        cast_info ci ON t.id = ci.movie_id
    LEFT JOIN
        aka_name a ON ci.person_id = a.person_id
    LEFT JOIN
        person_info p ON ci.person_id = p.person_id AND p.info_type_id = (SELECT id FROM info_type WHERE info = 'Gender')
    LEFT JOIN
        complete_cast mci ON t.id = mci.movie_id
    WHERE
        t.production_year >= 2000 AND t.production_year <= 2023
    GROUP BY
        t.title, t.production_year, c.name, a.name, p.gender
    ORDER BY
        t.production_year DESC, cast_count DESC
)
SELECT
    * 
FROM
    MovieDetails
WHERE
    cast_count > 5;
