
SELECT 
    t.title, 
    c.name AS character_name, 
    a.name AS actor_name, 
    m.name AS company_name, 
    k.keyword AS movie_keyword, 
    p.info AS person_info
FROM 
    aka_name a
JOIN 
    cast_info ci ON ci.person_id = a.person_id
JOIN 
    title t ON t.id = ci.movie_id
JOIN 
    complete_cast cc ON cc.movie_id = t.id
JOIN 
    movie_companies mc ON mc.movie_id = t.id
JOIN 
    company_name m ON m.id = mc.company_id
LEFT JOIN 
    movie_keyword mk ON mk.movie_id = t.id
LEFT JOIN 
    keyword k ON k.id = mk.keyword_id
LEFT JOIN 
    person_info p ON p.person_id = a.person_id
WHERE 
    t.production_year >= 2000 
    AND t.kind_id = (SELECT id FROM kind_type WHERE kind = 'movie')
    AND m.country_code = 'USA'
GROUP BY 
    t.title, 
    c.name, 
    a.name, 
    m.name, 
    k.keyword, 
    p.info
ORDER BY 
    t.production_year DESC, 
    a.name;
