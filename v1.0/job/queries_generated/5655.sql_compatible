
WITH RankedMovies AS (
    SELECT 
        a.id AS alias_id,
        t.title,
        t.production_year,
        c.name AS character_name,
        COUNT(DISTINCT m.id) AS movie_count
    FROM aka_name a
    JOIN cast_info ci ON a.person_id = ci.person_id
    JOIN title t ON ci.movie_id = t.id
    JOIN char_name c ON ci.person_role_id = c.id
    JOIN movie_companies mc ON t.id = mc.movie_id
    JOIN company_name cn ON mc.company_id = cn.id
    WHERE t.production_year >= 2000
      AND mc.company_type_id IN (SELECT id FROM company_type WHERE kind = 'Distributor')
    GROUP BY a.id, t.title, t.production_year, c.name
),
TopMovies AS (
    SELECT 
        alias_id,
        title,
        production_year,
        character_name,
        movie_count,
        RANK() OVER (PARTITION BY character_name ORDER BY movie_count DESC) AS rank
    FROM RankedMovies
)
SELECT 
    alias_id,
    title,
    production_year,
    character_name,
    movie_count
FROM TopMovies
WHERE rank <= 5
ORDER BY movie_count DESC, production_year DESC;
