
WITH MovieDetails AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COALESCE(SUM(CASE WHEN cc.role_id = 1 THEN 1 ELSE 0 END), 0) AS actor_count,
        COUNT(DISTINCT mk.keyword_id) AS keyword_count
    FROM 
        aka_title t
    LEFT JOIN 
        complete_cast cc ON t.id = cc.movie_id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    WHERE 
        t.production_year >= 2000
    GROUP BY 
        t.id, t.title, t.production_year
),
CompanyCounts AS (
    SELECT 
        mc.movie_id,
        COUNT(DISTINCT c.id) AS company_count
    FROM 
        movie_companies mc
    INNER JOIN 
        company_name c ON mc.company_id = c.id
    GROUP BY 
        mc.movie_id
),
RankedMovies AS (
    SELECT 
        md.title,
        md.production_year,
        md.actor_count + COALESCE(cc.company_count, 0) AS total_count,
        ROW_NUMBER() OVER (ORDER BY md.production_year DESC, total_count DESC) AS rank
    FROM 
        MovieDetails md
    LEFT JOIN 
        CompanyCounts cc ON md.movie_id = cc.movie_id
)
SELECT 
    rm.title,
    rm.production_year,
    rm.total_count
FROM 
    RankedMovies rm
WHERE 
    rm.rank <= 10
ORDER BY 
    rm.total_count DESC, rm.production_year ASC;
