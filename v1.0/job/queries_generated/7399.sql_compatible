
WITH MovieDetails AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        c.name AS company_name,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords,
        STRING_AGG(DISTINCT CONCAT(a.name, ' as ', r.role), ', ') AS cast
    FROM 
        title t
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    JOIN 
        cast_info ci ON cc.subject_id = ci.id
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    JOIN 
        role_type r ON ci.role_id = r.id
    GROUP BY 
        t.id, t.title, t.production_year, c.name
),
DetailedMovieInfo AS (
    SELECT
        md.title,
        md.production_year,
        md.company_name,
        COALESCE(md.keywords, 'No Keywords') AS keywords,
        COALESCE(md.cast, 'No Cast') AS cast,
        mi.info AS additional_info
    FROM 
        MovieDetails md
    LEFT JOIN 
        movie_info mi ON md.title_id = mi.movie_id
)
SELECT 
    title, 
    production_year, 
    company_name, 
    keywords, 
    cast, 
    additional_info
FROM 
    DetailedMovieInfo
WHERE 
    production_year BETWEEN 2000 AND 2023
ORDER BY 
    production_year DESC, 
    title;
