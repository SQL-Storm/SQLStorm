
WITH movie_data AS (
    SELECT
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT mc.company_id) AS company_count,
        COUNT(DISTINCT k.keyword) AS keyword_count,
        STRING_AGG(DISTINCT a.name, ', ') AS aliases,
        STRING_AGG(DISTINCT p.info, '; ') AS directors_info
    FROM title t
    LEFT JOIN movie_companies mc ON t.id = mc.movie_id
    LEFT JOIN movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN keyword k ON mk.keyword_id = k.id
    LEFT JOIN aka_title a ON t.id = a.movie_id
    LEFT JOIN complete_cast cc ON t.id = cc.movie_id
    LEFT JOIN cast_info ci ON cc.subject_id = ci.id
    LEFT JOIN person_info p ON ci.person_id = p.person_id AND p.info_type_id = (SELECT id FROM info_type WHERE info = 'director')
    WHERE t.production_year BETWEEN 2000 AND 2020
    GROUP BY t.id, t.title, t.production_year
),
final_output AS (
    SELECT
        md.movie_id,
        md.title,
        md.production_year,
        md.company_count,
        md.keyword_count,
        md.aliases,
        COALESCE(md.directors_info, 'No Director Info') AS directors_info
    FROM movie_data md
    ORDER BY md.production_year DESC, md.keyword_count DESC
)
SELECT * FROM final_output
LIMIT 100;
