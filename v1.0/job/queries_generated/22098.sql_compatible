
WITH RankedTitles AS (
    SELECT 
        t.id AS title_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.title) AS title_rank
    FROM 
        title t
),
MovieKeywordInfo AS (
    SELECT 
        mk.movie_id,
        COUNT(DISTINCT mk.keyword_id) AS keyword_count,
        STRING_AGG(DISTINCT k.keyword, ', ') AS all_keywords
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        aka_title a ON a.movie_id = mk.movie_id
    JOIN 
        movie_info mi ON mi.movie_id = mk.movie_id
    WHERE 
        mi.info_type_id IN (SELECT id FROM info_type WHERE info = 'Genre')
    GROUP BY 
        mk.movie_id
),
PersonRoles AS (
    SELECT 
        ci.movie_id,
        COUNT(DISTINCT ci.person_id) AS total_cast,
        STRING_AGG(DISTINCT p.name, ', ') AS actor_names
    FROM 
        cast_info ci
    JOIN 
        aka_name p ON p.person_id = ci.person_id
    GROUP BY 
        ci.movie_id
),
TopMovies AS (
    SELECT 
        m.movie_id,
        m.title,
        COALESCE(p.total_cast, 0) AS total_cast,
        COALESCE(mk.keyword_count, 0) AS keyword_count,
        COALESCE(mk.all_keywords, 'None') AS all_keywords
    FROM 
        aka_title m
    LEFT JOIN 
        PersonRoles p ON p.movie_id = m.movie_id
    LEFT JOIN 
        MovieKeywordInfo mk ON mk.movie_id = m.movie_id
    WHERE 
        m.production_year > 2000
        AND m.kind_id = (SELECT id FROM kind_type WHERE kind = 'movie')
)

SELECT 
    t.title,
    t.production_year,
    t.total_cast,
    t.keyword_count,
    t.all_keywords,
    COUNT(DISTINCT r.title_rank) AS same_year_titles_ranked
FROM 
    TopMovies t
JOIN 
    RankedTitles r ON r.production_year = t.production_year
WHERE 
    t.total_cast >= 5
    AND t.keyword_count > 0
GROUP BY 
    t.title, t.production_year, t.total_cast, t.keyword_count, t.all_keywords
HAVING 
    COUNT(DISTINCT r.title_rank) > 3
ORDER BY 
    t.production_year DESC, t.total_cast DESC;
