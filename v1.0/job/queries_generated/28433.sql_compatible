
WITH RankedMovies AS (
    SELECT
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT m.id) AS company_count,
        ARRAY_AGG(DISTINCT c.name) AS company_names,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT m.id) DESC) AS rank
    FROM
        aka_title AS t
    JOIN
        movie_companies AS mc ON t.id = mc.movie_id
    JOIN
        company_name AS c ON mc.company_id = c.id
    GROUP BY
        t.id, t.title, t.production_year
),
TopMovies AS (
    SELECT
        movie_id,
        title,
        production_year,
        company_count,
        company_names
    FROM
        RankedMovies
    WHERE
        rank <= 5  
),
PersonRoles AS (
    SELECT
        ci.movie_id,
        r.role,
        COUNT(ci.person_id) AS role_count
    FROM
        cast_info AS ci
    JOIN
        role_type AS r ON ci.person_role_id = r.id
    GROUP BY
        ci.movie_id, r.role
)
SELECT
    tm.title,
    tm.production_year,
    tm.company_count,
    tm.company_names,
    pr.role,
    pr.role_count
FROM
    TopMovies AS tm
LEFT JOIN
    PersonRoles AS pr ON tm.movie_id = pr.movie_id
ORDER BY
    tm.production_year DESC, tm.company_count DESC, pr.role_count DESC;
