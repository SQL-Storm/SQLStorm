
WITH RankedMovies AS (
    SELECT 
        t.title,
        t.production_year,
        COUNT(DISTINCT c.person_id) AS actor_count,
        RANK() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT c.person_id) DESC) AS rank
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    GROUP BY 
        t.title, t.production_year
),
MovieKeywords AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
),
MoviesWithInfo AS (
    SELECT 
        m.title,
        m.production_year,
        COALESCE(mk.keywords, 'No Keywords') AS keywords,
        m.actor_count
    FROM 
        RankedMovies m
    LEFT JOIN 
        MovieKeywords mk ON m.title = mk.movie_id
    WHERE 
        m.rank <= 5
)
SELECT 
    mw.title,
    mw.production_year,
    mw.keywords,
    CASE 
        WHEN mw.actor_count IS NULL THEN 'Unknown Actor Count'
        ELSE CAST(mw.actor_count AS VARCHAR)
    END AS actor_count,
    (SELECT COUNT(*) 
     FROM movie_info mi 
     WHERE mi.movie_id IN (SELECT id FROM aka_title WHERE title = mw.title)
     AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'Box Office')) AS box_office_info_count
FROM 
    MoviesWithInfo mw
WHERE 
    mw.production_year >= 2000
ORDER BY 
    mw.actor_count DESC NULLS LAST;
