
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT c.person_id) AS actor_count,
        STRING_AGG(DISTINCT a.name, ', ') AS actors_list,
        STRING_AGG(DISTINCT k.keyword, ', ') AS keywords_list,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT c.person_id) DESC) AS year_rank
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    LEFT JOIN 
        aka_name a ON c.person_id = a.person_id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        t.id, t.title, t.production_year
),

TopMovies AS (
    SELECT 
        movie_id, title, production_year, actor_count, actors_list
    FROM 
        RankedMovies
    WHERE 
        year_rank <= 5
)

SELECT 
    m.production_year,
    COUNT(m.movie_id) AS total_movies,
    AVG(m.actor_count) AS avg_actor_count,
    STRING_AGG(m.actors_list, '; ') AS all_actors,
    STRING_AGG(DISTINCT mk.keyword, ', ') AS all_keywords
FROM 
    TopMovies m
LEFT JOIN 
    movie_keyword mk ON m.movie_id = mk.movie_id
GROUP BY 
    m.production_year
ORDER BY 
    m.production_year DESC;
