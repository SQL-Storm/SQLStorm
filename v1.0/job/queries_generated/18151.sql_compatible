
SELECT 
    t.title, 
    a.name AS actor_name, 
    c.nr_order 
FROM 
    title t
JOIN 
    complete_cast cc ON t.id = cc.movie_id
JOIN 
    cast_info ci ON cc.subject_id = ci.person_id
JOIN 
    aka_name a ON ci.person_id = a.person_id
JOIN 
    (SELECT movie_id, ROW_NUMBER() OVER(PARTITION BY movie_id ORDER BY /* specify your order criteria */) AS nr_order 
     FROM complete_cast) c ON t.id = c.movie_id
WHERE 
    t.production_year = 2022
GROUP BY 
    t.title, 
    a.name, 
    c.nr_order
ORDER BY 
    t.title, 
    c.nr_order;
