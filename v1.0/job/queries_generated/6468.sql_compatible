
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    c.kind AS cast_type,
    p.info AS actor_biography,
    k.keyword AS movie_keyword,
    tn.name AS company_name,
    m.production_year
FROM 
    aka_name AS a
JOIN 
    cast_info AS ci ON a.person_id = ci.person_id
JOIN 
    aka_title AS t ON ci.movie_id = t.movie_id
JOIN 
    complete_cast AS cc ON t.id = cc.movie_id
JOIN 
    comp_cast_type AS c ON ci.person_role_id = c.id
JOIN 
    movie_companies AS mc ON t.id = mc.movie_id
JOIN 
    company_name AS tn ON mc.company_id = tn.id
JOIN 
    movie_info AS p ON t.id = p.movie_id
JOIN 
    movie_keyword AS mk ON t.id = mk.movie_id
JOIN 
    keyword AS k ON mk.keyword_id = k.id
JOIN 
    movie_info AS m ON t.id = m.movie_id
WHERE 
    a.name IS NOT NULL
    AND t.production_year BETWEEN 2000 AND 2023
    AND ci.nr_order < 3
GROUP BY 
    a.name, t.title, c.kind, p.info, k.keyword, tn.name, m.production_year
ORDER BY 
    t.production_year DESC, a.name ASC;
