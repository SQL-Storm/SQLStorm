
WITH RECURSIVE movie_hierarchy AS (
    SELECT 
        mt.id AS movie_id,
        mt.title AS movie_title,
        mt.production_year,
        NULL AS parent_movie_id,
        0 AS level
    FROM 
        aka_title mt
    WHERE 
        mt.production_year >= 2000

    UNION ALL

    SELECT 
        ml.linked_movie_id,
        lt.title,
        lt.production_year,
        mh.movie_id,
        mh.level + 1
    FROM 
        movie_link ml 
    JOIN 
        aka_title lt ON ml.linked_movie_id = lt.id
    JOIN 
        movie_hierarchy mh ON ml.movie_id = mh.movie_id
)

SELECT 
    h.movie_id,
    h.movie_title,
    h.production_year,
    COUNT(c.person_id) AS cast_count,
    STRING_AGG(ak.name, ', ') AS actor_names,
    AVG(CASE 
            WHEN p.gender = 'M' THEN 1.0 
            ELSE 0.0 
        END) AS male_proportion,
    CASE 
        WHEN h.level = 0 THEN 'Main Movie'
        ELSE 'Linked Movie'
    END AS movie_type
FROM 
    movie_hierarchy h
LEFT JOIN 
    cast_info c ON h.movie_id = c.movie_id
LEFT JOIN 
    aka_name ak ON c.person_id = ak.person_id
LEFT JOIN 
    name p ON ak.person_id = p.imdb_id
WHERE 
    h.production_year IS NOT NULL
GROUP BY 
    h.movie_id, h.movie_title, h.production_year, h.level
ORDER BY 
    h.production_year DESC, cast_count DESC
LIMIT 10;
