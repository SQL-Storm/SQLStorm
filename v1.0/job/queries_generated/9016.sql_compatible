
WITH movie_data AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        STRING_AGG(DISTINCT ak.name, ',' ORDER BY ak.name) AS aka_names,
        STRING_AGG(DISTINCT co.name, ',' ORDER BY co.name) AS company_names,
        STRING_AGG(DISTINCT k.keyword, ',' ORDER BY k.keyword) AS keywords
    FROM 
        aka_title AS t
    JOIN 
        movie_keyword AS mk ON t.movie_id = mk.movie_id
    JOIN 
        keyword AS k ON mk.keyword_id = k.id
    JOIN 
        movie_companies AS mc ON t.movie_id = mc.movie_id
    JOIN 
        company_name AS co ON mc.company_id = co.id
    JOIN 
        cast_info AS ci ON t.movie_id = ci.movie_id
    JOIN 
        aka_name AS ak ON ci.person_id = ak.person_id
    GROUP BY 
        t.title, t.production_year
    HAVING 
        COUNT(DISTINCT ak.name) > 1
)
SELECT 
    movie_data.movie_title,
    movie_data.production_year,
    movie_data.aka_names,
    movie_data.company_names,
    movie_data.keywords
FROM 
    movie_data
WHERE 
    movie_data.production_year >= 2000
ORDER BY 
    movie_data.production_year DESC, 
    movie_data.movie_title ASC
LIMIT 100;
