
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.id) AS rank
    FROM 
        aka_title t
    WHERE 
        t.kind_id IN (SELECT id FROM kind_type WHERE kind LIKE 'film%')
),
MovieDetails AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.production_year,
        ct.kind AS company_type,
        COUNT(DISTINCT mc.company_id) AS num_companies,
        COUNT(DISTINCT c.person_id) AS num_cast
    FROM 
        RankedMovies rm
    LEFT JOIN 
        complete_cast cc ON rm.movie_id = cc.movie_id
    LEFT JOIN 
        movie_companies mc ON rm.movie_id = mc.movie_id
    LEFT JOIN 
        company_type ct ON mc.company_type_id = ct.id
    LEFT JOIN 
        cast_info c ON cc.subject_id = c.person_id
    WHERE 
        rm.rank <= 5
    GROUP BY 
        rm.movie_id, rm.title, rm.production_year, ct.kind
),
TopMovies AS (
    SELECT 
        md.movie_id,
        md.title,
        md.production_year,
        md.company_type,
        CAST(NULLIF(md.num_companies, 0) AS FLOAT) / NULLIF(md.num_cast, 0) AS company_cast_ratio
    FROM 
        MovieDetails md
    WHERE 
        md.production_year >= 2000 AND md.num_cast > 5
)
SELECT 
    tm.title,
    tm.production_year,
    tm.company_type,
    COALESCE(tm.company_cast_ratio, 0) AS company_cast_ratio,
    STRING_AGG(DISTINCT c.name, ', ') AS cast_names
FROM 
    TopMovies tm
LEFT JOIN 
    cast_info ci ON tm.movie_id = ci.movie_id
LEFT JOIN 
    aka_name c ON ci.person_id = c.person_id
GROUP BY 
    tm.title, tm.production_year, tm.company_type, tm.movie_id
ORDER BY 
    tm.production_year DESC, company_cast_ratio DESC;
