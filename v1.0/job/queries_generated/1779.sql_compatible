
WITH RankedMovies AS (
    SELECT 
        t.title, 
        t.production_year, 
        COUNT(c.id) AS cast_count,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(c.id) DESC) AS rank
    FROM 
        aka_title t
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    GROUP BY 
        t.title, t.production_year
),
ActorDetails AS (
    SELECT 
        a.name AS actor_name,
        ca.movie_id,
        ROW_NUMBER() OVER (PARTITION BY ca.movie_id ORDER BY a.name) AS actor_rank
    FROM 
        aka_name a
    INNER JOIN 
        cast_info ca ON a.person_id = ca.person_id
),
MovieCompanies AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ') AS company_names,
        SUM(CASE WHEN ct.kind = 'Production' THEN 1 ELSE 0 END) AS production_companies
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    GROUP BY 
        mc.movie_id
)
SELECT 
    rm.title, 
    rm.production_year, 
    rm.cast_count, 
    ad.actor_name, 
    mc.company_names, 
    mc.production_companies
FROM 
    RankedMovies rm
LEFT JOIN 
    ActorDetails ad ON rm.rank = ad.actor_rank AND rm.title = ad.movie_id
LEFT JOIN 
    MovieCompanies mc ON rm.title = mc.movie_id
WHERE 
    rm.production_year > 2000 
    AND rm.cast_count > 1 
ORDER BY 
    rm.production_year DESC, rm.cast_count DESC;
