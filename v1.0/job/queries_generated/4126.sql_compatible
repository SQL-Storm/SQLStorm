
WITH RankedMovies AS (
    SELECT
        a.title,
        a.production_year,
        m.name AS company_name,
        ROW_NUMBER() OVER (PARTITION BY a.production_year ORDER BY COUNT(ci.id) DESC) AS rank
    FROM
        aka_title a
    JOIN
        movie_companies mc ON a.id = mc.movie_id
    JOIN
        company_name m ON mc.company_id = m.id
    LEFT JOIN
        complete_cast cc ON a.id = cc.movie_id
    LEFT JOIN
        cast_info ci ON cc.subject_id = ci.person_id AND ci.movie_id = a.id
    WHERE
        a.production_year IS NOT NULL
    GROUP BY
        a.title, a.production_year, m.name
),
TopMovies AS (
    SELECT
        title, production_year, company_name
    FROM
        RankedMovies
    WHERE
        rank <= 5
)

SELECT 
    tm.title,
    tm.production_year,
    STRING_AGG(DISTINCT CONCAT('Keyword: ', k.keyword), ', ') AS keywords,
    COALESCE(NULLIF(mk.info, ''), 'No additional info') AS movie_info,
    COUNT(DISTINCT ci.person_id) AS cast_count
FROM 
    TopMovies tm
JOIN 
    movie_keyword mk ON tm.title = mk.movie_id
LEFT JOIN 
    movie_info mi ON tm.title = mi.movie_id AND mi.info_type_id IN (SELECT id FROM info_type WHERE info = 'Runtime')
LEFT JOIN 
    movie_companies mc ON mc.movie_id = tm.title
LEFT JOIN 
    cast_info ci ON ci.movie_id = tm.title
LEFT JOIN 
    keyword k ON mk.keyword_id = k.id
GROUP BY 
    tm.title, tm.production_year, mk.info
ORDER BY 
    tm.production_year DESC, tm.title;
