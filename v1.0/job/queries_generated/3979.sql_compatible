
WITH RankedMovies AS (
    SELECT 
        t.title,
        t.production_year,
        COUNT(c.person_id) AS actor_count,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(c.person_id) DESC) AS rank_within_year
    FROM 
        title t
    LEFT JOIN 
        cast_info c ON t.id = c.movie_id
    GROUP BY 
        t.title, t.production_year
),
HighActorMovies AS (
    SELECT 
        title,
        production_year
    FROM 
        RankedMovies
    WHERE 
        actor_count > 5
),
HighRatedMovies AS (
    SELECT 
        m.title,
        AVG(CAST(mi.info AS numeric)) AS average_rating
    FROM 
        movie_info mi
    JOIN 
        title m ON mi.movie_id = m.id 
    WHERE 
        mi.info_type_id = (SELECT id FROM info_type WHERE info = 'rating')
    GROUP BY 
        m.title
),
FinalResults AS (
    SELECT 
        h.title,
        h.production_year,
        r.average_rating
    FROM 
        HighActorMovies h
    LEFT JOIN 
        HighRatedMovies r ON h.title = r.title
)
SELECT 
    f.title,
    f.production_year,
    COALESCE(f.average_rating, 'No Rating') AS average_rating
FROM 
    FinalResults f
WHERE 
    f.production_year >= 2000
ORDER BY 
    f.production_year DESC,
    f.average_rating DESC;
