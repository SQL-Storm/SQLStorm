
WITH MovieDetails AS (
    SELECT 
        a.id AS aka_id,
        a.name AS actor_name,
        t.title AS movie_title,
        t.production_year,
        COUNT(DISTINCT m.id) AS company_count,
        STRING_AGG(DISTINCT c.name, ', ') AS companies
    FROM 
        aka_name a
    JOIN 
        cast_info ci ON a.person_id = ci.person_id
    JOIN 
        aka_title t ON ci.movie_id = t.movie_id
    LEFT JOIN 
        movie_companies mc ON t.id = mc.movie_id
    LEFT JOIN 
        company_name c ON mc.company_id = c.id
    WHERE 
        t.production_year >= 2000 AND
        a.name IS NOT NULL
    GROUP BY 
        a.id, a.name, t.title, t.production_year
),
RankedMovies AS (
    SELECT 
        aka_id,
        actor_name,
        movie_title,
        production_year,
        company_count,
        companies,
        RANK() OVER (PARTITION BY production_year ORDER BY company_count DESC) AS rank
    FROM 
        MovieDetails
),
FilteredMovies AS (
    SELECT 
        *
    FROM 
        RankedMovies
    WHERE 
        rank <= 3
)
SELECT 
    f.actor_name,
    f.movie_title,
    f.production_year,
    f.company_count,
    COALESCE(f.companies, 'No associated companies') AS companies_associated
FROM 
    FilteredMovies f
ORDER BY 
    f.production_year DESC, 
    f.company_count DESC;
