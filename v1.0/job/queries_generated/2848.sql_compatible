
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT ci.person_id) DESC) AS rank
    FROM title t
    JOIN cast_info ci ON t.id = ci.movie_id
    GROUP BY t.id, t.title, t.production_year
),
CompanyInfo AS (
    SELECT 
        mc.movie_id,
        c.name AS company_name,
        ct.kind AS company_type
    FROM movie_companies mc
    JOIN company_name c ON mc.company_id = c.id
    JOIN company_type ct ON mc.company_type_id = ct.id
),
KeywordCounts AS (
    SELECT 
        mk.movie_id,
        COUNT(DISTINCT k.id) AS keyword_count
    FROM movie_keyword mk
    JOIN keyword k ON mk.keyword_id = k.id
    GROUP BY mk.movie_id
)
SELECT 
    rm.movie_id,
    rm.title,
    rm.production_year,
    COALESCE(ci.company_name, 'Unknown') AS company_name,
    COALESCE(ct.company_type, 'N/A') AS company_type,
    COALESCE(kc.keyword_count, 0) AS keyword_count
FROM RankedMovies rm
LEFT JOIN CompanyInfo ci ON rm.movie_id = ci.movie_id
LEFT JOIN KeywordCounts kc ON rm.movie_id = kc.movie_id
WHERE rm.rank <= 5
ORDER BY rm.production_year DESC, rm.rank;
