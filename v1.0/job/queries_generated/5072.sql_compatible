
WITH movie_and_cast AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        a.name AS actor_name,
        a.md5sum AS actor_md5sum,
        c.nr_order AS cast_order,
        r.role AS role_name
    FROM 
        title t
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    JOIN 
        cast_info c ON cc.subject_id = c.id
    JOIN 
        aka_name a ON c.person_id = a.person_id
    JOIN 
        role_type r ON c.role_id = r.id
    WHERE 
        t.production_year BETWEEN 2000 AND 2023
),
movies_with_keywords AS (
    SELECT 
        mac.movie_title,
        mac.production_year,
        STRING_AGG(mk.keyword, ', ') AS keywords
    FROM 
        movie_and_cast mac
    JOIN 
        movie_keyword mk ON mac.movie_title = mk.movie_id
    GROUP BY 
        mac.movie_title, mac.production_year
),
final_output AS (
    SELECT 
        mwk.movie_title,
        mwk.production_year,
        mwk.keywords,
        COUNT(mac.actor_name) AS actor_count
    FROM 
        movies_with_keywords mwk
    JOIN 
        movie_and_cast mac ON mwk.movie_title = mac.movie_title AND mwk.production_year = mac.production_year
    GROUP BY 
        mwk.movie_title, mwk.production_year, mwk.keywords
)
SELECT 
    fo.movie_title,
    fo.production_year,
    fo.keywords,
    fo.actor_count
FROM 
    final_output fo
ORDER BY 
    fo.production_year DESC, fo.actor_count DESC;
