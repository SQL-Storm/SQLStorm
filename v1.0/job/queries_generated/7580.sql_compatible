
SELECT 
    an.name AS actor_name,
    t.title AS movie_title,
    ct.kind AS company_type,
    k.keyword AS movie_keyword,
    yi.info AS movie_info
FROM 
    aka_name an
JOIN 
    cast_info ci ON an.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_type ct ON mc.company_type_id = ct.id
JOIN 
    keyword k ON t.id = k.movie_id
JOIN 
    movie_info yi ON t.id = yi.movie_id
WHERE 
    t.production_year > 2000 
    AND k.keyword LIKE '%action%'
    AND ct.kind NOT IN ('Distributor', 'Production')
GROUP BY 
    an.name, t.title, ct.kind, k.keyword, yi.info
ORDER BY 
    t.production_year DESC, an.name;
