WITH RECURSIVE ActorHierarchy AS (
    SELECT
        ci.person_id,
        p.name AS actor_name,
        1 AS hierarchy_level
    FROM
        cast_info ci
    JOIN
        aka_name p ON ci.person_id = p.person_id
    WHERE
        ci.nr_order = 1  

    UNION ALL

    SELECT
        ci.person_id,
        p.name AS actor_name,
        ah.hierarchy_level + 1
    FROM
        cast_info ci
    JOIN
        aka_name p ON ci.person_id = p.person_id
    JOIN
        ActorHierarchy ah ON ci.movie_id = (
            SELECT movie_id 
            FROM cast_info 
            WHERE person_id = ah.person_id 
            ORDER BY nr_order 
            LIMIT 1
        )
    WHERE
        ci.nr_order > 1
),
MovieDetails AS (
    SELECT
        m.id AS movie_id,
        m.title AS movie_title,
        m.production_year,
        string_agg(DISTINCT p.name, ', ') AS actors_list
    FROM
        aka_title m
    LEFT JOIN
        cast_info ci ON m.id = ci.movie_id
    LEFT JOIN
        aka_name p ON ci.person_id = p.person_id
    WHERE
        m.production_year IS NOT NULL
        AND m.kind_id = (
            SELECT id FROM kind_type WHERE kind = 'movie'
        )
    GROUP BY
        m.id, m.title, m.production_year
),
HighlightedMovies AS (
    SELECT
        md.movie_id,
        md.movie_title,
        md.production_year,
        ah.actor_name
    FROM
        MovieDetails md
    JOIN
        ActorHierarchy ah ON ah.hierarchy_level > 1
    WHERE
        md.production_year >= (SELECT AVG(production_year) FROM MovieDetails)
),
KeywordStats AS (
    SELECT
        mk.movie_id,
        COUNT(DISTINCT mk.keyword_id) AS keyword_count
    FROM
        movie_keyword mk
    GROUP BY
        mk.movie_id
)
SELECT 
    hm.movie_title,
    hm.production_year,
    COALESCE(ks.keyword_count, 0) AS num_keywords,
    STRING_AGG(DISTINCT hm.actor_name, ', ') AS all_actors
FROM 
    HighlightedMovies hm
LEFT JOIN 
    KeywordStats ks ON hm.movie_id = ks.movie_id
GROUP BY 
    hm.movie_title, hm.production_year
ORDER BY 
    hm.production_year DESC,
    num_keywords DESC;