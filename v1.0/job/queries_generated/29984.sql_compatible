
WITH MovieRoles AS (
    SELECT
        c.id AS cast_info_id,
        c.nr_order,
        a.name AS actor_name,
        t.title AS movie_title,
        t.production_year,
        r.role AS role_name
    FROM cast_info c
    JOIN aka_name a ON c.person_id = a.person_id
    JOIN title t ON c.movie_id = t.id
    JOIN role_type r ON c.role_id = r.id
),
CompanyInfo AS (
    SELECT
        m.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ' ORDER BY cn.name) AS production_companies,
        STRING_AGG(DISTINCT ct.kind, ', ' ORDER BY ct.kind) AS company_types
    FROM movie_companies m
    JOIN company_name cn ON m.company_id = cn.id
    JOIN company_type ct ON m.company_type_id = ct.id
    GROUP BY m.movie_id
),
KeywordInfo AS (
    SELECT
        mk.movie_id,
        STRING_AGG(DISTINCT k.keyword, ', ' ORDER BY k.keyword) AS keywords
    FROM movie_keyword mk
    JOIN keyword k ON mk.keyword_id = k.id
    GROUP BY mk.movie_id
)
SELECT
    mv.movie_title,
    mv.production_year,
    mv.actor_name,
    mv.role_name,
    ci.production_companies,
    ci.company_types,
    ki.keywords
FROM MovieRoles mv
JOIN CompanyInfo ci ON mv.movie_title = ci.movie_id
JOIN KeywordInfo ki ON mv.movie_title = ki.movie_id
WHERE mv.production_year >= 2000
ORDER BY mv.production_year DESC, mv.movie_title;
