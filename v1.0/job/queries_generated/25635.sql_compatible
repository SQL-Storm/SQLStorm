
WITH MovieRanked AS (
    SELECT 
        m.id AS movie_id,
        m.title AS movie_title,
        COUNT(DISTINCT c.person_id) AS cast_count,
        AVG(CASE WHEN r.role LIKE '%Lead%' THEN 1 ELSE 0 END) AS lead_percentage,
        STRING_AGG(DISTINCT ak.name, ', ') AS aka_names
    FROM 
        aka_title ak
    JOIN 
        title m ON ak.movie_id = m.id
    LEFT JOIN 
        cast_info c ON m.id = c.movie_id
    LEFT JOIN 
        role_type r ON c.role_id = r.id
    GROUP BY 
        m.id, m.title
),
TopMovies AS (
    SELECT 
        movie_id,
        movie_title,
        cast_count,
        lead_percentage,
        aka_names,
        RANK() OVER (ORDER BY cast_count DESC, lead_percentage DESC) AS movie_rank
    FROM 
        MovieRanked
)
SELECT 
    tm.movie_id,
    tm.movie_title,
    tm.cast_count,
    tm.lead_percentage,
    tm.aka_names
FROM 
    TopMovies tm
WHERE 
    tm.movie_rank <= 10
ORDER BY 
    tm.cast_count DESC, tm.lead_percentage DESC;
