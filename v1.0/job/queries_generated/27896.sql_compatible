
WITH RankedTitles AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        a.name AS actor_name,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY COUNT(c.person_id) DESC) AS rank
    FROM 
        title t
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name cn ON mc.company_id = cn.id
    JOIN 
        cast_info c ON t.id = c.movie_id
    JOIN 
        aka_name a ON c.person_id = a.person_id
    WHERE 
        cn.country_code = 'USA'
    GROUP BY 
        t.title, t.production_year, a.name
),
TopRankedTitles AS (
    SELECT 
        movie_title,
        production_year,
        actor_name
    FROM 
        RankedTitles
    WHERE 
        rank <= 5
)
SELECT 
    t.movie_title,
    t.production_year,
    t.actor_name,
    STRING_AGG(DISTINCT k.keyword, ', ') AS keywords,
    STRING_AGG(DISTINCT it.info, '; ') AS additional_info
FROM 
    TopRankedTitles t
LEFT JOIN 
    movie_keyword mk ON t.movie_title = mk.movie_id
LEFT JOIN 
    keyword k ON mk.keyword_id = k.id
LEFT JOIN 
    movie_info mi ON t.movie_title = mi.movie_id
LEFT JOIN 
    info_type it ON mi.info_type_id = it.id
GROUP BY 
    t.movie_title, t.production_year, t.actor_name
ORDER BY 
    t.production_year DESC, t.movie_title;
