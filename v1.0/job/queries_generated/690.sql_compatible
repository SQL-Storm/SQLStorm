
WITH RankedMovies AS (
    SELECT 
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.production_year DESC) AS year_rank
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
TopGenres AS (
    SELECT 
        k.keyword,
        COUNT(m.id) AS movie_count
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        aka_title m ON mk.movie_id = m.id
    GROUP BY 
        k.keyword
    HAVING 
        COUNT(m.id) > 5
),
MovieCompanies AS (
    SELECT 
        mc.movie_id,
        c.name AS company_name
    FROM 
        movie_companies mc
    LEFT JOIN 
        company_name c ON mc.company_id = c.id
    WHERE 
        c.country_code IS NOT NULL
)
SELECT 
    r.title,
    r.production_year,
    tg.keyword,
    COUNT(DISTINCT mc.company_name) AS company_count,
    SUM(CASE WHEN mc.company_name IS NULL THEN 1 ELSE 0 END) AS null_company_count
FROM 
    RankedMovies r
LEFT JOIN 
    MovieCompanies mc ON r.title = mc.movie_id
LEFT JOIN 
    TopGenres tg ON r.title = tg.keyword
WHERE 
    r.year_rank <= 3 
    AND r.production_year > 2000 
GROUP BY 
    r.title, r.production_year, tg.keyword
ORDER BY 
    r.production_year DESC, company_count DESC;
