
WITH RankedMovies AS (
    SELECT 
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.id DESC) AS rank
    FROM title t
    WHERE t.production_year IS NOT NULL
),
ActorMovies AS (
    SELECT 
        a.name,
        COUNT(DISTINCT ci.movie_id) AS movie_count
    FROM aka_name a
    JOIN cast_info ci ON a.person_id = ci.person_id
    GROUP BY a.name
    HAVING COUNT(DISTINCT ci.movie_id) > 5
),
RecentMovies AS (
    SELECT 
        rm.title,
        rm.production_year,
        COUNT(DISTINCT km.keyword) AS keyword_count
    FROM RankedMovies rm
    LEFT JOIN movie_keyword mk ON rm.title = mk.movie_id
    LEFT JOIN keyword km ON mk.keyword_id = km.id
    WHERE rm.rank <= 3
    GROUP BY rm.title, rm.production_year
),
CompanyDetails AS (
    SELECT 
        cn.name AS company_name,
        ct.kind AS company_type,
        mc.movie_id
    FROM company_name cn
    JOIN movie_companies mc ON cn.id = mc.company_id
    JOIN company_type ct ON mc.company_type_id = ct.id
    WHERE cn.country_code = 'USA'
)
SELECT 
    am.name AS actor_name,
    rm.title AS recent_movie_title,
    rm.production_year,
    cd.company_name,
    cd.company_type,
    COALESCE(rm.keyword_count, 0) AS keyword_count
FROM ActorMovies am
JOIN RecentMovies rm ON am.movie_count > (SELECT AVG(movie_count) FROM ActorMovies)
LEFT JOIN CompanyDetails cd ON rm.title IN (SELECT title FROM title WHERE production_year = rm.production_year)
ORDER BY rm.production_year DESC, am.movie_count DESC, rm.keyword_count DESC;
