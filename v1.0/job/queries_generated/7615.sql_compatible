
WITH movie_data AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        a.name AS actor_name,
        rt.role AS character_role,
        cii.kind AS cast_info_kind,
        cc.name AS company_name,
        mt.kind AS company_type,
        COUNT(DISTINCT mk.keyword) AS keyword_count
    FROM 
        aka_title t
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        aka_name a ON ci.person_id = a.person_id
    JOIN 
        role_type rt ON ci.role_id = rt.id
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name cc ON mc.company_id = cc.id
    JOIN 
        company_type mt ON mc.company_type_id = mt.id
    LEFT JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        comp_cast_type cii ON ci.person_role_id = cii.id
    WHERE 
        t.production_year >= 2000
    GROUP BY 
        t.id, t.title, t.production_year, a.name, rt.role, cii.kind, cc.name, mt.kind
    ORDER BY 
        t.production_year DESC, keyword_count DESC
)
SELECT 
    md.movie_id, 
    md.title, 
    md.production_year, 
    md.actor_name, 
    md.character_role, 
    md.cast_info_kind, 
    md.company_name, 
    md.company_type, 
    md.keyword_count
FROM 
    movie_data md
WHERE 
    md.keyword_count > 0
LIMIT 100;
