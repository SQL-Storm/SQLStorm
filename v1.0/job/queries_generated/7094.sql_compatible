
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    c.kind AS cast_type,
    y.production_year AS year_of_release,
    COUNT(DISTINCT t.id) AS number_of_movies
FROM 
    aka_name a
JOIN 
    cast_info ci ON a.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name cn ON mc.company_id = cn.id
JOIN 
    comp_cast_type c ON ci.person_role_id = c.id
JOIN 
    movie_info mi ON t.id = mi.movie_id
JOIN 
    movie_keyword mk ON t.id = mk.movie_id
JOIN 
    keyword k ON mk.keyword_id = k.id
JOIN 
    kind_type y ON t.kind_id = y.id
WHERE 
    y.kind = 'feature' 
    AND c.kind IN (SELECT kind FROM comp_cast_type WHERE kind LIKE 'cast%')
    AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'box office')
GROUP BY 
    a.name, t.title, c.kind, y.production_year
HAVING 
    COUNT(DISTINCT t.id) > 1
ORDER BY 
    y.production_year DESC, a.name;
