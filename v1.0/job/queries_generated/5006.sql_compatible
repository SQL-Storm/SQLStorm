
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    t.production_year,
    kt.kind AS cast_type,
    STRING_AGG(DISTINCT k.keyword) AS keywords,
    STRING_AGG(DISTINCT ci.note) AS cast_notes,
    STRING_AGG(DISTINCT co.name) AS company_names
FROM 
    aka_name a
JOIN 
    cast_info ci ON a.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
JOIN 
    kind_type kt ON t.kind_id = kt.id
JOIN 
    movie_info mi ON t.id = mi.movie_id
JOIN 
    keyword k ON mi.info = k.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name co ON mc.company_id = co.id
JOIN 
    role_type rt ON ci.role_id = rt.id
JOIN 
    complete_cast cc ON cc.movie_id = t.id AND cc.subject_id = a.person_id
WHERE 
    t.production_year > 2000 
    AND a.name IS NOT NULL
    AND co.country_code = 'US'
GROUP BY 
    a.name, t.title, t.production_year, kt.kind
ORDER BY 
    t.production_year DESC, a.name;
