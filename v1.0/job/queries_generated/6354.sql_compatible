
SELECT 
    ak.name AS aka_name,
    ti.title AS movie_title,
    co.name AS company_name,
    rt.role AS person_role,
    pi.info AS person_info,
    COUNT(DISTINCT mk.keyword) AS keyword_count
FROM 
    aka_name ak
JOIN 
    cast_info ci ON ak.person_id = ci.person_id
JOIN 
    title ti ON ci.movie_id = ti.id
JOIN 
    movie_companies mc ON ti.id = mc.movie_id
JOIN 
    company_name co ON mc.company_id = co.id
JOIN 
    role_type rt ON ci.role_id = rt.id
JOIN 
    person_info pi ON ak.person_id = pi.person_id
LEFT JOIN 
    movie_keyword mk ON ti.id = mk.movie_id
WHERE 
    ti.production_year >= 2000
    AND co.country_code = 'USA'
GROUP BY 
    ak.name, ti.title, co.name, rt.role, pi.info
ORDER BY 
    keyword_count DESC, ti.title;
