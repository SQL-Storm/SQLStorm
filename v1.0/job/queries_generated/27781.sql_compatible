
WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        a.name AS actor_name,
        ca.kind AS role,
        EXTRACT(YEAR FROM t.production_year) AS year,
        ROW_NUMBER() OVER (PARTITION BY t.id ORDER BY ca.nr_order) AS actor_rank
    FROM 
        aka_title t
    JOIN 
        cast_info ca ON t.id = ca.movie_id
    JOIN 
        aka_name a ON ca.person_id = a.person_id
    WHERE 
        t.production_year >= 2000
        AND t.kind_id IN (SELECT id FROM kind_type WHERE kind LIKE '%Comedy%')
),
movie_keywords AS (
    SELECT 
        mk.movie_id,
        COUNT(mk.keyword_id) AS keyword_count
    FROM 
        movie_keyword mk
    GROUP BY 
        mk.movie_id
),
enhanced_movies AS (
    SELECT 
        rm.movie_id,
        rm.title,
        rm.actor_name,
        rm.role,
        rm.year,
        mk.keyword_count,
        rm.actor_rank  -- Added actor_rank to the select list for filtering
    FROM 
        ranked_movies rm
    LEFT JOIN 
        movie_keywords mk ON rm.movie_id = mk.movie_id
)
SELECT 
    em.title,
    em.actor_name,
    em.role,
    em.year,
    em.keyword_count
FROM 
    enhanced_movies em
WHERE 
    em.actor_rank <= 3
ORDER BY 
    em.year DESC, em.keyword_count DESC
LIMIT 50;
