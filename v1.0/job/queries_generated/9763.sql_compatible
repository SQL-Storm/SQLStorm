
SELECT 
    a.name AS actor_name,
    t.title AS movie_title,
    t.production_year,
    cn.kind AS company_kind,
    ARRAY_AGG(DISTINCT k.keyword) AS keywords,
    COUNT(DISTINCT pc.info) AS person_information_count,
    MIN(t.season_nr) AS min_season,
    MAX(t.season_nr) AS max_season
FROM 
    aka_name a
JOIN 
    cast_info ci ON a.person_id = ci.person_id
JOIN 
    title t ON ci.movie_id = t.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name cn ON mc.company_id = cn.id
JOIN 
    company_type ct ON mc.company_type_id = ct.id
LEFT JOIN 
    movie_keyword mk ON t.id = mk.movie_id
LEFT JOIN 
    keyword k ON mk.keyword_id = k.id
LEFT JOIN 
    person_info pc ON a.person_id = pc.person_id
WHERE 
    t.production_year > 2000
    AND cn.country_code = 'USA'
GROUP BY 
    a.name, t.title, t.production_year, cn.kind
ORDER BY 
    movie_title ASC, t.production_year DESC;
