
WITH movie_cast AS (
    SELECT 
        a.id AS actor_id,
        a.name AS actor_name,
        t.id AS movie_id,
        t.title AS movie_title,
        t.production_year,
        c.nr_order AS role_order,
        r.role AS role_name
    FROM 
        aka_name a
    JOIN 
        cast_info c ON a.person_id = c.person_id
    JOIN 
        aka_title t ON c.movie_id = t.movie_id
    JOIN 
        role_type r ON c.role_id = r.id
    WHERE 
        t.production_year >= 2000
),
actor_movies AS (
    SELECT 
        actor_id,
        actor_name,
        ARRAY_AGG(movie_id) AS movie_ids,
        ARRAY_AGG(movie_title) AS movie_titles,
        COUNT(movie_id) AS movie_count
    FROM 
        movie_cast
    GROUP BY 
        actor_id, actor_name
    HAVING 
        COUNT(movie_id) > 5  
),
movie_keyword_info AS (
    SELECT 
        m.movie_id,
        m.info AS keyword_info,
        k.keyword AS movie_keyword
    FROM 
        movie_info m
    JOIN 
        movie_keyword mk ON m.movie_id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
)

SELECT 
    ac.actor_id,
    ac.actor_name,
    ac.movie_count,
    STRING_AGG(DISTINCT ac.movie_titles, ', ') AS movies,
    STRING_AGG(DISTINCT mki.keyword_info, '; ') AS keywords,
    STRING_AGG(DISTINCT mki.movie_keyword, ', ') AS keywords_links
FROM 
    actor_movies ac
LEFT JOIN 
    movie_keyword_info mki ON ARRAY[ac.movie_ids] && ARRAY[mki.movie_id]  
GROUP BY 
    ac.actor_id,
    ac.actor_name,
    ac.movie_count
ORDER BY 
    ac.movie_count DESC
LIMIT 10;
