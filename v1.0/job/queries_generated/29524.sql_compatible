
WITH RankedMovies AS (
    SELECT 
        t.title,
        t.production_year,
        p.name AS person_name,
        c.kind AS role,
        ROW_NUMBER() OVER (PARTITION BY t.id ORDER BY p.name) AS rank
    FROM 
        title t
    JOIN 
        cast_info ci ON t.id = ci.movie_id
    JOIN 
        aka_name p ON ci.person_id = p.person_id
    JOIN 
        role_type c ON ci.role_id = c.id
    WHERE 
        t.production_year BETWEEN 2000 AND 2023
        AND t.kind_id IN (1, 2, 3) 
)
SELECT 
    rm.title,
    rm.production_year,
    STRING_AGG(CONCAT(rm.person_name, ' (', rm.role, ')'), ', ') AS cast,
    COUNT(*) AS cast_count
FROM 
    RankedMovies rm
WHERE 
    rm.rank <= 3  
GROUP BY 
    rm.title,
    rm.production_year
ORDER BY 
    rm.production_year DESC, 
    cast_count DESC;
