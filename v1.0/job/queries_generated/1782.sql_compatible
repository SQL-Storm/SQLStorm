
WITH RankedMovies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        ROW_NUMBER() OVER (PARTITION BY t.production_year ORDER BY t.id) AS rank,
        COALESCE((SELECT COUNT(*) FROM movie_keyword mk WHERE mk.movie_id = t.id), 0) AS keyword_count
    FROM 
        aka_title t
    WHERE 
        t.production_year IS NOT NULL
),
ActorsInfo AS (
    SELECT 
        ci.movie_id,
        ak.name AS actor_name,
        ct.kind AS role
    FROM 
        cast_info ci
    JOIN 
        aka_name ak ON ci.person_id = ak.person_id
    JOIN 
        role_type ct ON ci.role_id = ct.id
    WHERE 
        ak.name IS NOT NULL
),
CompanyDetails AS (
    SELECT 
        mc.movie_id,
        cn.name AS company_name,
        ct.kind AS company_type
    FROM 
        movie_companies mc
    LEFT JOIN 
        company_name cn ON mc.company_id = cn.id
    LEFT JOIN 
        company_type ct ON mc.company_type_id = ct.id
)
SELECT 
    rm.movie_id,
    rm.title,
    rm.production_year,
    ai.actor_name,
    ai.role,
    cd.company_name,
    cd.company_type,
    rm.keyword_count
FROM 
    RankedMovies rm
LEFT JOIN 
    ActorsInfo ai ON rm.movie_id = ai.movie_id
LEFT JOIN 
    CompanyDetails cd ON rm.movie_id = cd.movie_id
WHERE 
    rm.rank <= 5 
    AND (cd.company_name IS NOT NULL OR ai.actor_name IS NOT NULL)
GROUP BY 
    rm.movie_id,
    rm.title,
    rm.production_year,
    ai.actor_name,
    ai.role,
    cd.company_name,
    cd.company_type,
    rm.keyword_count
ORDER BY 
    rm.production_year DESC,
    rm.keyword_count DESC,
    rm.movie_id;
