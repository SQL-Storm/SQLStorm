
WITH RankedMovies AS (
    SELECT 
        a.title AS movie_title,
        a.production_year,
        ROW_NUMBER() OVER (PARTITION BY a.production_year ORDER BY a.production_year DESC) AS year_rank
    FROM 
        aka_title a
    WHERE 
        a.production_year IS NOT NULL
),
MovieCast AS (
    SELECT
        c.movie_id,
        COUNT(DISTINCT c.person_id) AS total_cast,
        MAX(COALESCE(r.role, 'Unknown')) AS primary_role
    FROM 
        cast_info c
    LEFT JOIN 
        role_type r ON r.id = c.role_id
    GROUP BY 
        c.movie_id
),
MovieInfo AS (
    SELECT 
        mi.movie_id,
        STRING_AGG(DISTINCT mi.info, ', ') AS movie_info_details
    FROM 
        movie_info mi
    GROUP BY 
        mi.movie_id
)
SELECT 
    m.movie_title,
    m.production_year,
    mc.total_cast,
    mc.primary_role,
    COALESCE(mi.movie_info_details, 'No additional info') AS info_summary
FROM 
    RankedMovies m
LEFT JOIN 
    MovieCast mc ON m.movie_title = mc.movie_id  -- Assuming 'm.id' should be 'm.movie_id'
LEFT JOIN 
    MovieInfo mi ON m.movie_title = mi.movie_id  -- Assuming 'm.id' should be 'm.movie_id'
WHERE 
    m.year_rank <= 10
ORDER BY 
    m.production_year DESC,
    mc.total_cast DESC;
