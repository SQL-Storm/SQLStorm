
WITH ranked_movies AS (
    SELECT 
        a.title AS movie_title,
        a.production_year,
        k.keyword,
        t.id AS title_id,
        ROW_NUMBER() OVER (PARTITION BY a.id ORDER BY a.production_year DESC) AS rank
    FROM 
        aka_title a
    JOIN 
        movie_keyword mk ON a.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        title t ON a.id = t.id
    WHERE 
        a.production_year >= 2000
),

actors AS (
    SELECT 
        ak.name AS actor_name,
        c.movie_id,
        c.person_role_id,
        r.role
    FROM 
        cast_info c
    JOIN 
        aka_name ak ON c.person_id = ak.person_id
    JOIN 
        role_type r ON c.role_id = r.id
    WHERE 
        ak.gender = 'F'
),

movie_details AS (
    SELECT 
        mv.id AS movie_id,
        mv.title,
        c.name AS company_name,
        cp.kind AS company_type,
        mv.production_year,
        ARRAY_AGG(DISTINCT k.keyword) AS keywords
    FROM 
        title mv
    JOIN 
        movie_companies mc ON mv.id = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        company_type cp ON mc.company_type_id = cp.id
    LEFT JOIN 
        movie_keyword mk ON mv.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mv.id, mv.title, c.name, cp.kind, mv.production_year
)

SELECT 
    rd.movie_title,
    rd.production_year,
    rd.keyword,
    a.actor_name,
    md.title AS movie_title,
    md.company_name,
    md.company_type,
    md.production_year,
    md.keywords
FROM 
    ranked_movies rd
JOIN 
    actors a ON a.movie_id = rd.title_id
JOIN 
    movie_details md ON md.movie_id = rd.title_id
WHERE 
    rd.rank = 1
ORDER BY 
    rd.production_year DESC, 
    a.actor_name;
