
WITH RankedMovies AS (
    SELECT 
        a.title,
        a.production_year,
        COUNT(DISTINCT mc.company_id) AS company_count,
        ROW_NUMBER() OVER (PARTITION BY a.production_year ORDER BY COUNT(DISTINCT mc.company_id) DESC) AS rank
    FROM 
        aka_title a
    LEFT JOIN 
        movie_companies mc ON a.id = mc.movie_id
    GROUP BY 
        a.title, a.production_year
),
TopMovies AS (
    SELECT 
        title, 
        production_year 
    FROM 
        RankedMovies 
    WHERE 
        rank <= 5
),
ActorInfo AS (
    SELECT 
        ak.name AS actor_name,
        COUNT(DISTINCT ci.movie_id) AS movie_count
    FROM 
        aka_name ak
    JOIN 
        cast_info ci ON ak.person_id = ci.person_id
    GROUP BY 
        ak.name
)
SELECT 
    tm.title,
    tm.production_year,
    ai.actor_name,
    ai.movie_count,
    COALESCE(GROUP_CONCAT(DISTINCT c.kind SEPARATOR ', '), 'No Company') AS companies,
    (SELECT COUNT(*) FROM movie_info mi WHERE mi.movie_id IN (SELECT ci2.movie_id FROM cast_info ci2 WHERE ci2.person_id = ak.person_id)) AS info_count
FROM 
    TopMovies tm
LEFT JOIN 
    movie_companies mco ON tm.title = (SELECT title FROM aka_title WHERE id = mco.movie_id)
LEFT JOIN 
    ActorInfo ai ON tm.production_year IN (SELECT DISTINCT production_year FROM aka_title WHERE id IN (SELECT ci.movie_id FROM cast_info ci WHERE ci.person_id = ai.actor_name))
LEFT JOIN 
    company_type c ON mco.company_type_id = c.id
LEFT JOIN 
    aka_name ak ON ak.id = mco.company_id
GROUP BY 
    tm.title, 
    tm.production_year, 
    ai.actor_name, 
    ai.movie_count
HAVING 
    COUNT(DISTINCT mco.company_id) > 0
ORDER BY 
    tm.production_year DESC, 
    ai.movie_count DESC;
