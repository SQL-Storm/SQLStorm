
SELECT 
    a.name AS aka_name,
    t.title AS movie_title,
    pi.name AS person_name,
    r.role AS person_role,
    c.note AS cast_note,
    m.info AS movie_info
FROM 
    aka_name AS a
JOIN 
    cast_info AS c ON a.person_id = c.person_id
JOIN 
    title AS t ON c.movie_id = t.id
JOIN 
    role_type AS r ON c.role_id = r.id
JOIN 
    person_info AS pi ON a.person_id = pi.person_id
JOIN 
    movie_info AS m ON t.id = m.movie_id
WHERE 
    m.info_type_id IN (SELECT id FROM info_type WHERE info = 'Synopsis')
GROUP BY 
    a.name, t.title, pi.name, r.role, c.note, m.info
ORDER BY 
    t.production_year DESC, a.name;
