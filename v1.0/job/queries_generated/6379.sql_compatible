
SELECT 
    t.title AS movie_title,
    a.name AS actor_name,
    COUNT(DISTINCT kw.keyword) AS total_keywords,
    COUNT(DISTINCT comp.name) AS total_companies,
    AVG(mi.info_length) AS average_info_length
FROM 
    title t
JOIN 
    complete_cast cc ON t.id = cc.movie_id
JOIN 
    cast_info ci ON cc.subject_id = ci.person_id
JOIN 
    aka_name a ON ci.person_id = a.person_id
JOIN 
    movie_keyword mk ON t.id = mk.movie_id
JOIN 
    keyword kw ON mk.keyword_id = kw.id
JOIN 
    movie_companies mc ON t.id = mc.movie_id
JOIN 
    company_name comp ON mc.company_id = comp.id
JOIN 
    movie_info mi ON t.id = mi.movie_id
GROUP BY 
    t.title, a.name, mi.info_length
HAVING 
    COUNT(DISTINCT kw.keyword) > 2
ORDER BY 
    total_keywords DESC, average_info_length ASC
LIMIT 10;
