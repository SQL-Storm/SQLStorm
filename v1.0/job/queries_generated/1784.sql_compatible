
WITH ranked_movies AS (
    SELECT 
        t.id AS movie_id,
        t.title,
        t.production_year,
        COUNT(DISTINCT c.person_id) OVER (PARTITION BY t.id) AS total_cast,
        SUM(CASE WHEN ci.person_role_id IS NOT NULL THEN 1 ELSE 0 END) OVER (PARTITION BY t.id) AS credited_cast,
        ROW_NUMBER() OVER (ORDER BY t.production_year DESC) AS rank
    FROM 
        aka_title t
    LEFT JOIN 
        complete_cast cc ON t.id = cc.movie_id
    LEFT JOIN 
        cast_info ci ON cc.subject_id = ci.id
),
keyword_summary AS (
    SELECT 
        mk.movie_id,
        STRING_AGG(k.keyword, ', ') AS keywords
    FROM 
        movie_keyword mk
    JOIN 
        keyword k ON mk.keyword_id = k.id
    GROUP BY 
        mk.movie_id
),
company_summary AS (
    SELECT 
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ', ') AS companies
    FROM 
        movie_companies mc
    JOIN 
        company_name cn ON mc.company_id = cn.id
    GROUP BY 
        mc.movie_id
),
movie_details AS (
    SELECT 
        rm.title,
        rm.production_year,
        rm.total_cast,
        rm.credited_cast,
        ks.keywords,
        cs.companies,
        CASE 
            WHEN rm.total_cast > 0 THEN (CAST(rm.credited_cast AS FLOAT) / rm.total_cast) * 100 
            ELSE NULL 
        END AS credit_percentage
    FROM 
        ranked_movies rm
    LEFT JOIN 
        keyword_summary ks ON rm.movie_id = ks.movie_id
    LEFT JOIN 
        company_summary cs ON rm.movie_id = cs.movie_id
)
SELECT 
    md.title,
    md.production_year,
    COALESCE(md.keywords, 'No Keywords') AS keywords,
    COALESCE(md.companies, 'No Companies') AS companies,
    md.credit_percentage,
    CASE 
        WHEN md.credit_percentage IS NULL THEN 'Unknown'
        WHEN md.credit_percentage > 75 THEN 'Highly Credited'
        WHEN md.credit_percentage BETWEEN 50 AND 75 THEN 'Moderately Credited'
        ELSE 'Low Credited'
    END AS credit_status
FROM 
    movie_details md
WHERE 
    md.production_year BETWEEN 1990 AND 2023
ORDER BY 
    md.production_year DESC, md.title;
