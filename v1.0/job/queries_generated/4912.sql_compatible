
WITH MovieDetails AS (
    SELECT 
        a.id AS movie_id,
        a.title,
        a.production_year,
        k.keyword,
        ROW_NUMBER() OVER (PARTITION BY a.id ORDER BY k.keyword) AS keyword_rank
    FROM 
        aka_title a
    LEFT JOIN 
        movie_keyword mk ON a.id = mk.movie_id
    LEFT JOIN 
        keyword k ON mk.keyword_id = k.id
    WHERE 
        a.production_year >= 2000
), 
DirectorInfo AS (
    SELECT 
        c.movie_id,
        c.person_id,
        r.role AS director_role,
        COUNT(*) OVER (PARTITION BY c.movie_id) AS director_count
    FROM 
        cast_info c
    JOIN 
        role_type r ON c.role_id = r.id
    WHERE 
        r.role = 'director'
), 
TitleWithDirectors AS (
    SELECT 
        md.movie_id,
        md.title,
        md.production_year,
        di.person_id AS director_id,
        di.director_role,
        di.director_count
    FROM 
        MovieDetails md
    LEFT JOIN 
        DirectorInfo di ON md.movie_id = di.movie_id
)

SELECT 
    twd.title AS movie_title,
    twd.production_year,
    COALESCE(d.name, 'Unknown') AS director_name,
    STRING_AGG(k.keyword, ', ') AS keywords,
    COUNT(DISTINCT cc.person_id) AS unique_actors_count,
    MAX(CASE 
        WHEN twd.director_count > 1 THEN 'Multiple Directors' 
        ELSE 'Single Director' 
    END) AS director_status
FROM 
    TitleWithDirectors twd
LEFT JOIN 
    complete_cast cc ON twd.movie_id = cc.movie_id
LEFT JOIN 
    aka_name d ON twd.director_id = d.person_id
LEFT JOIN 
    movie_keyword mk ON twd.movie_id = mk.movie_id
LEFT JOIN 
    keyword k ON mk.keyword_id = k.id
WHERE 
    d.name IS NOT NULL OR twd.director_count IS NULL
GROUP BY 
    twd.movie_id, twd.title, twd.production_year, twd.director_count, d.name
HAVING 
    twd.production_year > 2010
ORDER BY 
    twd.production_year DESC, movie_title ASC;
