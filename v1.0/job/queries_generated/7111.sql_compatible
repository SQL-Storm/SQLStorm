
WITH MovieDetails AS (
    SELECT 
        t.title AS movie_title,
        t.production_year,
        c.kind AS company_type,
        k.keyword AS keywords,
        a.name AS actor_names,
        COUNT(m.id) AS movie_count
    FROM 
        aka_title t
    JOIN 
        movie_companies mc ON t.id = mc.movie_id
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        movie_keyword mk ON t.id = mk.movie_id
    JOIN 
        keyword k ON mk.keyword_id = k.id
    JOIN 
        complete_cast cc ON t.id = cc.movie_id
    JOIN 
        aka_name a ON cc.subject_id = a.person_id
    GROUP BY 
        t.title, t.production_year, c.kind, k.keyword, a.name
),
AggregatedInfo AS (
    SELECT 
        md.movie_title,
        md.production_year,
        md.company_type,
        STRING_AGG(md.keywords, ', ') AS combined_keywords,
        STRING_AGG(DISTINCT md.actor_names, ', ') AS all_actors,
        SUM(md.movie_count) OVER (PARTITION BY md.company_type) AS total_movies_by_company
    FROM 
        MovieDetails md
    GROUP BY 
        md.movie_title, 
        md.production_year, 
        md.company_type
)
SELECT 
    ai.movie_title,
    ai.production_year,
    ai.company_type,
    ai.combined_keywords,
    ai.all_actors,
    ai.total_movies_by_company
FROM 
    AggregatedInfo ai
WHERE 
    ai.production_year >= 2000
ORDER BY 
    ai.production_year DESC,
    ai.company_type ASC;
