
WITH RankedMovies AS (
    SELECT 
        mt.id AS movie_id,
        mt.title AS movie_title,
        mt.production_year,
        COUNT(DISTINCT ca.person_id) AS total_actors,
        ROW_NUMBER() OVER (PARTITION BY mt.production_year ORDER BY COUNT(DISTINCT ca.person_id) DESC) AS rank
    FROM 
        aka_title mt
    LEFT JOIN 
        cast_info ca ON mt.movie_id = ca.movie_id
    WHERE 
        mt.production_year IS NOT NULL
    GROUP BY 
        mt.id, mt.title, mt.production_year
),
ActorDetails AS (
    SELECT 
        ak.id AS actor_id,
        ak.name AS actor_name,
        COUNT(DISTINCT ci.movie_id) AS movies_count,
        STRING_AGG(DISTINCT mt.title, ', ') AS movie_titles
    FROM 
        aka_name ak
    JOIN 
        cast_info ci ON ak.person_id = ci.person_id
    JOIN 
        aka_title mt ON ci.movie_id = mt.movie_id
    WHERE 
        ak.name IS NOT NULL
    GROUP BY 
        ak.id, ak.name
),
CompanyMovieInfo AS (
    SELECT 
        m.id AS movie_id,
        c.name AS company_name,
        ct.kind AS company_type,
        COALESCE(mi.info, 'No description available') AS movie_info
    FROM 
        movie_companies mc
    JOIN 
        company_name c ON mc.company_id = c.id
    JOIN 
        company_type ct ON mc.company_type_id = ct.id
    JOIN 
        aka_title m ON mc.movie_id = m.movie_id
    LEFT JOIN 
        movie_info mi ON m.id = mi.movie_id AND mi.info_type_id = (SELECT id FROM info_type WHERE info = 'Description' LIMIT 1)
)
SELECT 
    rm.movie_title,
    rm.production_year,
    COALESCE(ad.actor_name, 'Unknown Actor') AS actor_name,
    ad.movies_count,
    ad.movie_titles,
    cm.company_name,
    cm.company_type,
    cm.movie_info
FROM 
    RankedMovies rm
FULL OUTER JOIN 
    ActorDetails ad ON rm.movie_id IN (SELECT ci.movie_id FROM cast_info ci WHERE ci.person_id IN (SELECT ak.person_id FROM aka_name ak WHERE ak.name IS NOT NULL))
LEFT JOIN 
    CompanyMovieInfo cm ON rm.movie_id = cm.movie_id
WHERE 
    rm.rank <= 5
ORDER BY 
    rm.production_year DESC, rm.total_actors DESC, ad.movies_count DESC;
