
WITH MovieRoles AS (
    SELECT 
        c.movie_id,
        c.person_id,
        r.role,
        ROW_NUMBER() OVER (PARTITION BY c.movie_id ORDER BY c.nr_order) AS role_rank
    FROM 
        cast_info c
    JOIN 
        role_type r ON c.role_id = r.id
),
MovieDetails AS (
    SELECT 
        t.movie_id,
        t.title,
        t.production_year,
        m.company_id,
        COUNT(DISTINCT m.company_id) AS total_companies,
        AVG(m.production_year) OVER (PARTITION BY t.production_year) AS avg_company_creation_year,
        STRING_AGG(DISTINCT co.name, ', ') AS company_names
    FROM 
        aka_title t
    LEFT JOIN 
        movie_companies m ON t.movie_id = m.movie_id
    LEFT JOIN 
        company co ON m.company_id = co.id
    GROUP BY 
        t.movie_id, t.title, t.production_year
),
HighestRoleActors AS (
    SELECT 
        mr.movie_id,
        ak.name,
        mr.role,
        mr.role_rank
    FROM 
        MovieRoles mr
    JOIN 
        aka_name ak ON mr.person_id = ak.person_id
    WHERE 
        mr.role_rank = 1
)
SELECT 
    md.title,
    md.production_year,
    hra.name AS lead_actor,
    md.total_companies,
    md.avg_company_creation_year,
    md.company_names
FROM 
    MovieDetails md
LEFT JOIN 
    HighestRoleActors hra ON md.movie_id = hra.movie_id
WHERE 
    md.production_year >= 2000
    AND md.total_companies > 0
    AND md.company_names IS NOT NULL
ORDER BY 
    md.production_year DESC, md.title;
