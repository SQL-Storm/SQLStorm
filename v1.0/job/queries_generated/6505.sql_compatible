
WITH MovieDetails AS (
    SELECT at.title, at.production_year, c.info AS cast_info
    FROM aka_title at
    JOIN complete_cast cc ON at.id = cc.movie_id
    JOIN cast_info ci ON cc.subject_id = ci.id
    JOIN aka_name an ON ci.person_id = an.person_id
    JOIN person_info pi ON an.person_id = pi.person_id
    WHERE pi.info_type_id = (SELECT id FROM info_type WHERE info = 'Birth Date')
),
CompanyDetails AS (
    SELECT mc.movie_id, cn.name AS company_name, ct.kind AS company_type
    FROM movie_companies mc
    JOIN company_name cn ON mc.company_id = cn.id
    JOIN company_type ct ON mc.company_type_id = ct.id
),
KeywordDetails AS (
    SELECT mk.movie_id, k.keyword
    FROM movie_keyword mk
    JOIN keyword k ON mk.keyword_id = k.id
)
SELECT md.title, md.production_year, md.cast_info, cd.company_name, cd.company_type, kd.keyword
FROM MovieDetails md
LEFT JOIN CompanyDetails cd ON md.id = cd.movie_id
LEFT JOIN KeywordDetails kd ON md.id = kd.movie_id
WHERE md.production_year BETWEEN 2000 AND 2023
ORDER BY md.production_year DESC, md.title ASC;
