
WITH RankedMovies AS (
    SELECT 
        t.id AS title_id,
        t.title AS title,
        t.production_year,
        RANK() OVER (PARTITION BY t.production_year ORDER BY COUNT(DISTINCT c.person_id) DESC) AS actor_count_rank
    FROM 
        title t
    JOIN 
        cast_info c ON t.id = c.movie_id
    GROUP BY 
        t.id, t.title, t.production_year
),
TopMovies AS (
    SELECT 
        title_id,
        title,
        production_year
    FROM 
        RankedMovies
    WHERE 
        actor_count_rank = 1
),
MovieCompaniesDetails AS (
    SELECT 
        m.movie_id,
        c.name AS company_name,
        ct.kind AS company_type
    FROM 
        movie_companies m
    JOIN 
        company_name c ON m.company_id = c.id
    JOIN 
        company_type ct ON m.company_type_id = ct.id
),
MovieInfoDetails AS (
    SELECT 
        m.movie_id,
        STRING_AGG(DISTINCT mi.info, ', ') AS movie_info
    FROM 
        movie_info m
    JOIN 
        info_type it ON m.info_type_id = it.id
    GROUP BY 
        m.movie_id
)
SELECT 
    t.title,
    t.production_year,
    mc.company_name,
    mc.company_type,
    mi.movie_info
FROM 
    TopMovies t
LEFT JOIN 
    MovieCompaniesDetails mc ON t.title_id = mc.movie_id
LEFT JOIN 
    MovieInfoDetails mi ON t.title_id = mi.movie_id
WHERE 
    mc.company_name IS NOT NULL OR mi.movie_info IS NOT NULL
ORDER BY 
    t.production_year DESC, t.title;
