
WITH MovieStats AS (
    SELECT
        t.id AS movie_id,
        t.title,
        t.production_year,
        STRING_AGG(DISTINCT ak.name, ',') AS aka_names,
        COUNT(DISTINCT c.person_id) AS cast_count,
        COUNT(DISTINCT k.id) AS keyword_count
    FROM
        aka_title AS ak
    JOIN
        title AS t ON ak.movie_id = t.id
    LEFT JOIN
        cast_info AS c ON t.id = c.movie_id
    LEFT JOIN
        movie_keyword AS mk ON t.id = mk.movie_id
    LEFT JOIN
        keyword AS k ON mk.keyword_id = k.id
    GROUP BY
        t.id, t.title, t.production_year
),
CompanyStats AS (
    SELECT
        mc.movie_id,
        STRING_AGG(DISTINCT cn.name, ',') AS company_names,
        COUNT(DISTINCT mc.id) AS company_count
    FROM
        movie_companies AS mc
    JOIN
        company_name AS cn ON mc.company_id = cn.id
    GROUP BY
        mc.movie_id
)
SELECT
    ms.movie_id,
    ms.title,
    ms.production_year,
    ms.aka_names,
    ms.cast_count,
    ms.keyword_count,
    cs.company_names,
    cs.company_count
FROM
    MovieStats AS ms
LEFT JOIN
    CompanyStats AS cs ON ms.movie_id = cs.movie_id
WHERE
    ms.production_year >= 2000
    AND ms.cast_count > 2
ORDER BY
    ms.production_year DESC,
    ms.title ASC;
