
WITH PostStats AS (
    SELECT 
        P.PostTypeId,
        COUNT(*) AS TotalPosts,
        AVG(V.Score) AS AverageScore,
        SUM(COALESCE(P.ViewCount, 0)) AS TotalViewCount,
        SUM(COALESCE(C.Id, 0)) AS TotalComments,
        SUM(COALESCE(A.Id, 0)) AS TotalAnswers
    FROM 
        Posts P
    LEFT JOIN 
        Votes V ON P.Id = V.PostId
    LEFT JOIN 
        Comments C ON P.Id = C.PostId
    LEFT JOIN 
        Posts A ON P.Id = A.ParentId
    GROUP BY 
        P.PostTypeId
),
UserStats AS (
    SELECT 
        U.Id AS UserId,
        COUNT(DISTINCT B.Id) AS TotalBadges,
        AVG(U.Reputation) AS AverageReputation
    FROM 
        Users U
    LEFT JOIN 
        Badges B ON U.Id = B.UserId
    GROUP BY 
        U.Id
)
SELECT 
    PS.PostTypeId,
    PS.TotalPosts,
    PS.AverageScore,
    PS.TotalViewCount,
    PS.TotalComments,
    PS.TotalAnswers,
    US.UserId,
    US.TotalBadges,
    US.AverageReputation
FROM 
    PostStats PS
JOIN 
    UserStats US ON US.UserId = PS.PostTypeId
ORDER BY 
    PS.TotalPosts DESC;
