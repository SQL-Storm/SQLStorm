
WITH UserStatistics AS (
    SELECT 
        U.Id AS UserId,
        U.Reputation,
        COUNT(DISTINCT P.Id) AS PostCount,
        SUM(CASE WHEN P.PostTypeId = 1 THEN 1 ELSE 0 END) AS QuestionCount,
        SUM(CASE WHEN P.PostTypeId = 2 THEN 1 ELSE 0 END) AS AnswerCount,
        SUM(CASE WHEN P.Score > 0 THEN 1 ELSE 0 END) AS PositiveScoreCount
    FROM 
        Users U
    LEFT JOIN 
        Posts P ON U.Id = P.OwnerUserId
    GROUP BY 
        U.Id, U.Reputation
),
PostEngagement AS (
    SELECT 
        P.Id AS PostId,
        P.Title,
        P.CreationDate,
        P.ViewCount,
        COUNT(C.Comment) AS CommentCount,
        SUM(CASE WHEN V.VoteTypeId = 2 THEN 1 ELSE 0 END) AS UpVoteCount,
        SUM(CASE WHEN V.VoteTypeId = 3 THEN 1 ELSE 0 END) AS DownVoteCount
    FROM 
        Posts P
    LEFT JOIN 
        Comments C ON P.Id = C.PostId
    LEFT JOIN 
        Votes V ON P.Id = V.PostId
    GROUP BY 
        P.Id, P.Title, P.CreationDate, P.ViewCount
),
TopUsers AS (
    SELECT 
        U.UserId,
        U.Reputation,
        U.PostCount,
        U.QuestionCount,
        U.AnswerCount,
        U.PositiveScoreCount,
        ROW_NUMBER() OVER (ORDER BY U.Reputation DESC) AS ReputationRank
    FROM 
        UserStatistics U
),
TopPosts AS (
    SELECT 
        PE.PostId,
        PE.Title,
        PE.CreationDate,
        PE.ViewCount,
        PE.CommentCount,
        PE.UpVoteCount,
        PE.DownVoteCount,
        ROW_NUMBER() OVER (ORDER BY PE.ViewCount DESC) AS ViewRank
    FROM 
        PostEngagement PE
)
SELECT 
    TU.ReputationRank,
    TU.UserId,
    TU.Reputation,
    TU.PostCount,
    TU.QuestionCount,
    TU.AnswerCount,
    TU.PositiveScoreCount,
    TP.ViewRank,
    TP.PostId,
    TP.Title,
    TP.CreationDate,
    TP.ViewCount,
    TP.CommentCount,
    TP.UpVoteCount,
    TP.DownVoteCount
FROM 
    TopUsers TU
JOIN 
    TopPosts TP ON TU.UserId = (SELECT P.OwnerUserId FROM Posts P WHERE P.Id = TP.PostId)
WHERE 
    TU.ReputationRank <= 10 AND TP.ViewRank <= 10
ORDER BY 
    TU.Reputation DESC, TP.ViewCount DESC;
