
WITH RankedPosts AS (
    SELECT
        p.Id,
        p.Title,
        p.CreationDate,
        p.ViewCount,
        p.AnswerCount,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.ViewCount DESC) AS Rank
    FROM
        Posts p
    WHERE
        p.PostTypeId = 1
        AND p.CreationDate >= TIMESTAMP '2024-10-01 12:34:56' - INTERVAL '1 year'
),
UserReputation AS (
    SELECT
        u.Id AS UserId,
        u.Reputation,
        COALESCE(b.Class, 0) AS BadgeClass
    FROM
        Users u
    LEFT JOIN Badges b ON u.Id = b.UserId AND b.Class = 1
),
PostVoteCounts AS (
    SELECT
        v.PostId,
        SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END) AS UpVoteCount,
        SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END) AS DownVoteCount
    FROM
        Votes v
    GROUP BY
        v.PostId
)
SELECT
    up.DisplayName,
    rp.Title,
    rp.CreationDate,
    rp.ViewCount,
    pu.UpVoteCount,
    pu.DownVoteCount,
    ur.Reputation,
    ur.BadgeClass
FROM
    RankedPosts rp
JOIN Users up ON rp.OwnerUserId = up.Id
LEFT JOIN PostVoteCounts pu ON rp.Id = pu.PostId
JOIN UserReputation ur ON up.Id = ur.UserId
WHERE
    rp.Rank <= 5
    AND ur.Reputation > 100
ORDER BY
    rp.ViewCount DESC
LIMIT 10;
