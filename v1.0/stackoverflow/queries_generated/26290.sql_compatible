
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.Tags,
        u.DisplayName AS OwnerDisplayName,
        p.CreationDate,
        p.Score,
        ROW_NUMBER() OVER (PARTITION BY p.Tags ORDER BY p.CreationDate DESC) AS Rank
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    WHERE 
        p.PostTypeId = 1 
        AND p.CreationDate >= DATEADD(year, -5, CURRENT_TIMESTAMP)
        AND p.Score > 0
),
FilteredPosts AS (
    SELECT 
        PostId,
        Title,
        Body,
        Tags,
        OwnerDisplayName,
        CreationDate,
        Score
    FROM 
        RankedPosts
    WHERE 
        Rank <= 5 
),
TagStatistics AS (
    SELECT 
        Tags,
        COUNT(*) AS PostCount,
        AVG(Score) AS AverageScore
    FROM 
        FilteredPosts
    GROUP BY 
        Tags
),
FinalResults AS (
    SELECT 
        fp.Tags,
        fp.Title,
        fp.OwnerDisplayName,
        fp.CreationDate,
        fp.Score,
        ts.PostCount,
        ts.AverageScore
    FROM 
        FilteredPosts fp
    JOIN 
        TagStatistics ts ON fp.Tags = ts.Tags
    ORDER BY 
        ts.PostCount DESC
)
SELECT 
    *,
    CONCAT('This post titled "', Title, '" by ', OwnerDisplayName, ' has a score of ', Score, ' and falls under the tag: ', Tags) AS PostSummary
FROM 
    FinalResults
WHERE 
    AverageScore > 10 
ORDER BY 
    CreationDate DESC;
