
WITH RankedPosts AS (
    SELECT p.Id,
           p.Title,
           p.CreationDate,
           p.ViewCount,
           p.Score,
           COUNT(c.Id) AS CommentCount,
           COUNT(DISTINCT v.id) AS VoteCount,
           RANK() OVER (PARTITION BY p.OwnerUserId ORDER BY p.Score DESC, p.CreationDate DESC) AS PostRank
    FROM Posts p
    LEFT JOIN Comments c ON p.Id = c.PostId
    LEFT JOIN Votes v ON p.Id = v.PostId AND v.VoteTypeId = 2 
    WHERE p.CreationDate >= TIMESTAMP '2024-10-01 12:34:56' - INTERVAL '1 year'
    GROUP BY p.Id, p.Title, p.CreationDate, p.ViewCount, p.Score
),
TopPosts AS (
    SELECT Id, Title, Score, CreationDate, ViewCount, CommentCount, VoteCount, OwnerUserId
    FROM RankedPosts
    WHERE PostRank = 1
)
SELECT u.Id AS UserId,
       u.DisplayName,
       COUNT(DISTINCT b.Id) AS BadgeCount,
       SUM(tp.ViewCount) AS TotalViews,
       SUM(tp.Score) AS TotalScore,
       SUM(tp.CommentCount) AS TotalComments,
       SUM(tp.VoteCount) AS TotalVotes
FROM Users u
JOIN TopPosts tp ON u.Id = tp.OwnerUserId
LEFT JOIN Badges b ON u.Id = b.UserId
GROUP BY u.Id, u.DisplayName
ORDER BY TotalScore DESC, TotalViews DESC
LIMIT 10;
