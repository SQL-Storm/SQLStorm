
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.Score,
        p.ViewCount,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.CreationDate DESC) AS Rank
    FROM 
        Posts p
    WHERE 
        p.CreationDate >= TIMESTAMP '2024-10-01 12:34:56' - INTERVAL '1 year'
), 
UserEngagement AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        COUNT(DISTINCT c.Id) AS CommentCount,
        COALESCE(SUM(v.BountyAmount), 0) AS TotalBounties
    FROM 
        Users u
    LEFT JOIN 
        Comments c ON u.Id = c.UserId
    LEFT JOIN 
        Votes v ON u.Id = v.UserId
    GROUP BY 
        u.Id, u.DisplayName
), 
PostScoreSummary AS (
    SELECT 
        p.Id AS PostId,
        SUM(p.Score) AS TotalScore,
        AVG(p.ViewCount) AS AvgViewCount
    FROM 
        Posts p
    GROUP BY 
        p.Id
)
SELECT 
    up.UserId,
    up.DisplayName,
    rp.PostId,
    rp.Title,
    rp.CreationDate,
    rp.Score,
    ue.CommentCount,
    ue.TotalBounties,
    ps.TotalScore,
    ps.AvgViewCount
FROM 
    RankedPosts rp
JOIN 
    Users up ON rp.PostId IN (SELECT ParentId FROM Posts WHERE ParentId = rp.PostId) OR rp.PostId IN (SELECT AcceptedAnswerId FROM Posts pp WHERE pp.Id = rp.PostId)
LEFT JOIN 
    UserEngagement ue ON up.Id = ue.UserId
LEFT JOIN 
    PostScoreSummary ps ON ps.PostId = rp.PostId
WHERE 
    rp.Rank = 1
ORDER BY 
    ue.TotalBounties DESC, rp.Score DESC, rp.CreationDate DESC;
