WITH UserVoteSummary AS (
    SELECT 
        U.Id AS UserId, 
        U.DisplayName, 
        COUNT(V.Id) AS TotalVotes, 
        SUM(CASE WHEN V.VoteTypeId = 2 THEN 1 ELSE 0 END) AS UpVotes, 
        SUM(CASE WHEN V.VoteTypeId = 3 THEN 1 ELSE 0 END) AS DownVotes
    FROM 
        Users U
    LEFT JOIN 
        Votes V ON U.Id = V.UserId
    GROUP BY 
        U.Id
), TagSummary AS (
    SELECT 
        T.Id AS TagId,
        T.TagName,
        COUNT(P.Id) AS PostCount
    FROM 
        Tags T
    LEFT JOIN 
        Posts P ON T.Id = ANY (string_to_array(P.Tags, ',')::int[])
    WHERE 
        P.PostTypeId = 1 
    GROUP BY 
        T.Id
), PopularTags AS (
    SELECT 
        TagId, 
        TagName, 
        PostCount 
    FROM 
        TagSummary 
    WHERE 
        PostCount > 100
), PostActivity AS (
    SELECT 
        P.Id AS PostId, 
        P.Title, 
        P.CreationDate, 
        P.LastActivityDate, 
        P.OwnerUserId, 
        T.TagName,
        COALESCE(U.DisplayName, 'Community User') AS OwnerDisplayName
    FROM 
        Posts P 
    JOIN 
        PostsTags PT ON P.Id = PT.PostId 
    JOIN 
        Tags T ON PT.TagId = T.Id
    LEFT JOIN 
        Users U ON P.OwnerUserId = U.Id
    WHERE 
        P.PostTypeId = 1 AND 
        P.LastActivityDate >= cast('2024-10-01 12:34:56' as timestamp) - INTERVAL '30 days'
), MostActiveUsers AS (
    SELECT 
        U.Id AS UserId, 
        U.DisplayName, 
        COUNT(P.Id) AS QuestionCount
    FROM 
        Users U
    JOIN 
        Posts P ON U.Id = P.OwnerUserId
    WHERE 
        P.PostTypeId = 1 
    GROUP BY 
        U.Id
    ORDER BY 
        QuestionCount DESC
    LIMIT 10
)
SELECT 
    U.UserId,
    U.DisplayName,
    U.TotalVotes,
    U.UpVotes,
    U.DownVotes,
    T.TagName,
    P.PostId,
    P.Title,
    P.CreationDate,
    P.LastActivityDate,
    P.OwnerDisplayName
FROM 
    UserVoteSummary U
JOIN 
    PopularTags T ON U.UserId IN (SELECT DISTINCT OwnerUserId FROM PostActivity)
JOIN 
    PostActivity P ON T.TagId IN (SELECT TagId FROM Tags WHERE P.Tags LIKE '%' || T.TagName || '%')
JOIN 
    MostActiveUsers M ON U.UserId = M.UserId
ORDER BY 
    U.TotalVotes DESC, 
    P.LastActivityDate DESC;