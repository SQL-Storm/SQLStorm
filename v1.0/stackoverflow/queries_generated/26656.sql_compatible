
WITH RecentPosts AS (
    SELECT 
        P.Id AS PostId,
        P.Title,
        P.OwnerUserId,
        P.CreationDate,
        P.Tags,
        U.DisplayName AS AuthorName,
        U.Reputation,
        COUNT(C.ID) AS CommentCount,
        SUM(CASE WHEN V.VoteTypeId = 2 THEN 1 ELSE 0 END) AS UpVotes,
        SUM(CASE WHEN V.VoteTypeId = 3 THEN 1 ELSE 0 END) AS DownVotes
    FROM 
        Posts P
    JOIN 
        Users U ON P.OwnerUserId = U.Id
    LEFT JOIN 
        Comments C ON P.Id = C.PostId
    LEFT JOIN 
        Votes V ON P.Id = V.PostId
    WHERE 
        P.CreationDate >= '2024-10-01 12:34:56' - INTERVAL '30 days'
    GROUP BY 
        P.Id, P.Title, P.OwnerUserId, P.CreationDate, P.Tags, U.DisplayName, U.Reputation
),
FilteredPosts AS (
    SELECT 
        PostId,
        Title,
        AuthorName,
        CreationDate,
        Tags,
        Reputation,
        CommentCount,
        UpVotes,
        DownVotes,
        LEAD(CreationDate) OVER (PARTITION BY Tags ORDER BY CreationDate) AS NextPostDate
    FROM 
        RecentPosts
    WHERE 
        Tags IS NOT NULL AND LENGTH(Tags) > 0
),
Trends AS (
    SELECT 
        Tags,
        COUNT(*) AS PostCount,
        AVG(Reputation) AS AvgReputation,
        AVG(UpVotes) AS AvgUpVotes,
        AVG(DownVotes) AS AvgDownVotes,
        MAX(NextPostDate) AS LatestPostDate
    FROM 
        FilteredPosts
    GROUP BY 
        Tags
    ORDER BY 
        PostCount DESC
)
SELECT 
    Tags,
    PostCount,
    AvgReputation,
    AvgUpVotes,
    AvgDownVotes,
    LatestPostDate
FROM 
    Trends
WHERE 
    PostCount > 5
LIMIT 10;
