WITH RankedPosts AS (
    SELECT
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.Score,
        p.ViewCount,
        p.AnswerCount,
        p.CommentCount,
        u.DisplayName AS OwnerDisplayName,
        p.Tags,
        ROW_NUMBER() OVER (PARTITION BY p.Tags ORDER BY p.Score DESC, p.CreationDate DESC) AS rn
    FROM
        Posts p
    JOIN
        Users u ON p.OwnerUserId = u.Id
    WHERE
        p.PostTypeId = 1 
        AND p.CreationDate >= DATEADD(year, -1, GETDATE()) 
),
TopQuestions AS (
    SELECT
        rp.*
    FROM
        RankedPosts rp
    WHERE
        rp.rn = 1
)
SELECT
    tq.PostId,
    tq.Title,
    tq.CreationDate,
    tq.Score,
    tq.ViewCount,
    tq.AnswerCount,
    tq.CommentCount,
    tq.OwnerDisplayName,
    (SELECT STRING_AGG(t.TagName, ', ') 
     FROM Tags t 
     WHERE t.Id IN (SELECT CAST(value AS INT) FROM STRING_SPLIT(tq.Tags, ','))) AS Tags
FROM
    TopQuestions tq
ORDER BY
    tq.Score DESC, tq.ViewCount DESC;