
WITH PostAnalytics AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.ViewCount,
        p.CreationDate,
        p.Tags,
        COUNT(c.Id) AS CommentCount,
        COUNT(v.Id) FILTER (WHERE v.VoteTypeId = 2) AS UpVotes,
        COUNT(v.Id) FILTER (WHERE v.VoteTypeId = 3) AS DownVotes,
        COUNT(b.Id) AS BadgeCount
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    LEFT JOIN 
        Badges b ON p.OwnerUserId = b.UserId
    WHERE 
        p.CreationDate >= DATE_SUB('2024-10-01', INTERVAL 1 YEAR)  
    GROUP BY 
        p.Id, p.Title, p.ViewCount, p.CreationDate, p.Tags
), PopularTags AS (
    SELECT 
        UNNEST(string_to_array(Tags, ',')) AS TagName,
        COUNT(*) AS TagCount
    FROM 
        Posts
    WHERE 
        CreationDate >= DATE_SUB('2024-10-01', INTERVAL 1 YEAR)
    GROUP BY 
        TagName
), TrendingPosts AS (
    SELECT 
        pa.PostId,
        pa.Title,
        pa.ViewCount,
        pa.CommentCount,
        pa.UpVotes,
        pa.DownVotes,
        pt.TagName
    FROM 
        PostAnalytics pa
    JOIN 
        PopularTags pt ON pt.TagName = ANY(string_to_array(pa.Tags, ','))  
    WHERE 
        pa.ViewCount > 1000  
    ORDER BY 
        pa.ViewCount DESC
    LIMIT 10  
)

SELECT 
    tp.PostId,
    tp.Title,
    tp.ViewCount,
    tp.CommentCount,
    tp.UpVotes,
    tp.DownVotes,
    tp.TagName
FROM 
    TrendingPosts tp
JOIN 
    PostTypes t ON tp.PostId = t.Id
WHERE 
    t.Name LIKE '%question%'  
ORDER BY 
    tp.ViewCount DESC, tp.UpVotes DESC;
