
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreatedDate,
        p.OwnerUserId,
        p.PostTypeId,
        COALESCE(p.AcceptedAnswerId, 0) AS AcceptedAnswerId,
        COALESCE(p.ViewCount, 0) AS ViewCount,
        COALESCE(COUNT(c.Id) FILTER (WHERE c.Text IS NOT NULL), 0) AS CommentCount,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.CreatedDate DESC) AS PostRank
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    WHERE 
        p.CreatedDate > TIMESTAMP '2024-10-01 12:34:56' - INTERVAL '1 year' 
    GROUP BY 
        p.Id, p.Title, p.CreatedDate, p.OwnerUserId, p.PostTypeId, p.AcceptedAnswerId
),
UserStats AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        u.Reputation,
        COUNT(DISTINCT rp.PostId) AS TotalPosts,
        SUM(CASE WHEN rp.PostTypeId = 1 THEN 1 ELSE 0 END) AS Questions,
        SUM(CASE WHEN rp.PostTypeId = 2 THEN 1 ELSE 0 END) AS Answers,
        SUM(rp.CommentCount) AS TotalComments,
        SUM(rp.ViewCount) AS TotalViews
    FROM 
        Users u
    JOIN 
        RankedPosts rp ON u.Id = rp.OwnerUserId
    GROUP BY 
        u.Id, u.DisplayName, u.Reputation
),
TopUsers AS (
    SELECT 
        us.UserId,
        us.DisplayName,
        us.Reputation,
        us.TotalPosts,
        us.Questions,
        us.Answers,
        us.TotalComments,
        us.TotalViews,
        RANK() OVER (ORDER BY us.Reputation DESC) AS ReputationRank
    FROM 
        UserStats us
)
SELECT 
    tu.DisplayName,
    tu.Reputation,
    tu.TotalPosts,
    tu.Questions,
    tu.Answers,
    tu.TotalComments,
    tu.TotalViews
FROM 
    TopUsers tu
WHERE 
    tu.ReputationRank <= 10 
ORDER BY 
    tu.Reputation DESC;
