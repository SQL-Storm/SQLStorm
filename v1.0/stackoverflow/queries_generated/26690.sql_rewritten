WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.CreationDate,
        p.Tags,
        COALESCE(SUM(v.VoteTypeId = 2) OVER (PARTITION BY p.Id), 0) AS UpVotes,
        COALESCE(SUM(v.VoteTypeId = 3) OVER (PARTITION BY p.Id), 0) AS DownVotes,
        COALESCE(SUM(c.Id) OVER (PARTITION BY p.Id), 0) AS CommentCount,
        ROW_NUMBER() OVER (PARTITION BY p.Tags ORDER BY p.ViewCount DESC) AS TagRank
    FROM 
        Posts p
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    WHERE 
        p.PostTypeId = 1  
    GROUP BY 
        p.Id, p.Title, p.Body, p.CreationDate, p.Tags
)
SELECT 
    rp.PostId,
    rp.Title,
    rp.Body,
    rp.CreationDate,
    rp.Tags,
    rp.UpVotes,
    rp.DownVotes,
    rp.CommentCount,
    ph.RevisionGUID AS LastRevisionGUID,
    ph.CreationDate AS LastChangeDate,
    u.DisplayName AS LastEditedBy,
    pt.Name AS PostType
FROM 
    RankedPosts rp
JOIN 
    PostHistory ph ON rp.PostId = ph.PostId
JOIN 
    Users u ON ph.UserId = u.Id
JOIN 
    PostTypes pt ON rp.PostTypeId = pt.Id
WHERE 
    rp.TagRank <= 5  
    AND ph.CreationDate = (SELECT MAX(CreationDate) FROM PostHistory WHERE PostId = rp.PostId)
ORDER BY 
    rp.CreationDate DESC, rp.ViewCount DESC;