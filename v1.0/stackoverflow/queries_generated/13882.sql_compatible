
WITH PostSummary AS (
    SELECT 
        p.Id AS PostId,
        p.PostTypeId,
        p.Score,
        p.ViewCount,
        p.CreationDate,
        u.Reputation AS OwnerReputation,
        COALESCE(v.VoteCount, 0) AS TotalVotes
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    LEFT JOIN (
        SELECT 
            PostId,
            COUNT(*) AS VoteCount
        FROM 
            Votes
        GROUP BY 
            PostId
    ) v ON p.Id = v.PostId
),

PostTypeSummary AS (
    SELECT 
        pt.Id AS PostTypeId,
        pt.Name AS PostTypeName,
        COUNT(ps.PostId) AS PostCount,
        SUM(ps.Score) AS TotalScore,
        SUM(ps.ViewCount) AS TotalViews,
        AVG(ps.OwnerReputation) AS AvgOwnerReputation,
        AVG(ps.TotalVotes) AS AvgTotalVotes
    FROM 
        PostSummary ps
    JOIN 
        PostTypes pt ON ps.PostTypeId = pt.Id
    GROUP BY 
        pt.Id, pt.Name
)

SELECT 
    p.PostTypeId,
    pt.PostTypeName,
    p.PostCount,
    p.TotalScore,
    p.TotalViews,
    p.AvgOwnerReputation,
    p.AvgTotalVotes
FROM 
    PostTypeSummary p
ORDER BY 
    p.PostTypeId;
