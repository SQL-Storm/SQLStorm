WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.CreationDate,
        p.ViewCount,
        p.AnswerCount,
        u.DisplayName AS OwnerDisplayName,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.ViewCount DESC) AS PostRank
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    WHERE 
        p.PostTypeId = 1 
),
TopPosts AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.Body,
        rp.CreationDate,
        rp.ViewCount,
        rp.AnswerCount,
        rp.OwnerDisplayName
    FROM 
        RankedPosts rp
    WHERE 
        rp.PostRank <= 3 
),
TagDetails AS (
    SELECT 
        t.TagName,
        COUNT(DISTINCT p.Id) AS TagPostCount
    FROM 
        Tags t
    LEFT JOIN 
        Posts p ON p.Tags LIKE '%' || t.TagName || '%'
    GROUP BY 
        t.TagName
    HAVING 
        COUNT(DISTINCT p.Id) > 5 
),
PostActivity AS (
    SELECT 
        ph.PostId,
        ph.CreationDate AS HistoryDate,
        COUNT(*) AS EditCount,
        STRING_AGG(DISTINCT ph.Comment, ', ') AS EditComments
    FROM 
        PostHistory ph
    GROUP BY 
        ph.PostId, ph.CreationDate
)
SELECT 
    tp.PostId,
    tp.Title,
    tp.Body,
    tp.CreationDate,
    tp.ViewCount,
    tp.AnswerCount,
    tp.OwnerDisplayName,
    td.TagName,
    pa.EditCount,
    pa.EditComments
FROM 
    TopPosts tp
JOIN 
    PostActivity pa ON tp.PostId = pa.PostId
JOIN 
    TagDetails td ON tp.Body LIKE '%' || td.TagName || '%'
ORDER BY 
    tp.ViewCount DESC, tp.CreationDate DESC;