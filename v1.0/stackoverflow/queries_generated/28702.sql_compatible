
WITH RankedPosts AS (
    SELECT 
        P.Id AS PostId,
        P.Title,
        P.Tags,
        U.DisplayName AS OwnerDisplayName,
        COUNT(A.Id) AS AnswerCount,
        COUNT(C.Id) AS CommentCount,
        P.CreationDate,
        P.LastActivityDate,
        RANK() OVER (PARTITION BY P.OwnerUserId ORDER BY P.CreationDate DESC) AS OwnerPostRank
    FROM 
        Posts P
    LEFT JOIN 
        Posts A ON P.Id = A.ParentId
    LEFT JOIN 
        Comments C ON P.Id = C.PostId
    LEFT JOIN 
        Users U ON P.OwnerUserId = U.Id
    WHERE 
        P.PostTypeId = 1 
    GROUP BY 
        P.Id, P.Title, P.Tags, U.DisplayName, P.CreationDate, P.LastActivityDate
),
TopOwnerPosts AS (
    SELECT 
        RP.PostId,
        RP.Title,
        RP.Tags,
        RP.OwnerDisplayName,
        RP.AnswerCount,
        RP.CommentCount,
        RP.CreationDate,
        RP.LastActivityDate,
        ROW_NUMBER() OVER (ORDER BY RP.CreationDate DESC) AS OverallRank
    FROM 
        RankedPosts RP
    WHERE 
        RP.OwnerPostRank = 1 
)
SELECT 
    T.PostId,
    T.Title,
    T.Tags,
    T.OwnerDisplayName,
    T.AnswerCount,
    T.CommentCount,
    DATEDIFF(day, T.CreationDate, CURRENT_DATE) AS DaysSinceCreation,
    DATEDIFF(day, T.LastActivityDate, CURRENT_DATE) AS DaysSinceLastActivity
FROM 
    TopOwnerPosts T
ORDER BY 
    T.OverallRank
LIMIT 10;
