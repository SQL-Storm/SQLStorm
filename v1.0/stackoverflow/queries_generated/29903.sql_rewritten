WITH ActiveUsers AS (
    SELECT 
        Id AS UserId, 
        DisplayName, 
        Reputation, 
        UpVotes, 
        DownVotes, 
        Views 
    FROM Users 
    WHERE LastAccessDate >= cast('2024-10-01' as date) - INTERVAL '1 year'
),
RecentPosts AS (
    SELECT 
        p.Id AS PostId, 
        p.Title, 
        p.Body, 
        p.CreationDate, 
        p.ViewCount, 
        p.PostTypeId, 
        u.DisplayName AS OwnerDisplayName,
        COUNT(c.Id) AS CommentCount,
        COUNT(v.Id) AS VoteCount,
        STRING_AGG(DISTINCT t.TagName, ', ') AS Tags
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    LEFT JOIN 
        Tags t ON t.Id = ANY(string_to_array(substring(p.Tags, 2, length(p.Tags) - 2), '><')::int[])
    WHERE 
        p.CreationDate >= cast('2024-10-01' as date) - INTERVAL '6 months' AND 
        p.PostTypeId = 1 
    GROUP BY 
        p.Id, u.DisplayName
),
PostActivity AS (
    SELECT 
        ph.PostId, 
        ph.PostHistoryTypeId, 
        ph.UserId, 
        ph.CreationDate,
        p.Title,
        pt.Name AS PostHistoryTypeName
    FROM 
        PostHistory ph
    JOIN 
        Posts p ON ph.PostId = p.Id
    JOIN 
        PostHistoryTypes pt ON ph.PostHistoryTypeId = pt.Id
    WHERE 
        ph.CreationDate >= cast('2024-10-01' as date) - INTERVAL '1 year'
),
PostMetrics AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.ViewCount,
        rp.CommentCount,
        rp.VoteCount,
        COUNT(pa.PostHistoryTypeId) FILTER (WHERE pa.PostHistoryTypeId IN (10, 11, 12)) AS ClosureActions,
        COUNT(pa.PostHistoryTypeId) FILTER (WHERE pa.PostHistoryTypeId = 24) AS EditSuggestions,
        STRING_AGG(DISTINCT pt.Name, ', ') AS RecentPostActions
    FROM 
        RecentPosts rp
    LEFT JOIN 
        PostActivity pa ON rp.PostId = pa.PostId
    GROUP BY 
        rp.PostId, rp.Title, rp.ViewCount, rp.CommentCount, rp.VoteCount
)
SELECT 
    au.UserId,
    au.DisplayName,
    au.Reputation,
    pm.Title,
    pm.ViewCount,
    pm.CommentCount,
    pm.VoteCount,
    pm.ClosureActions,
    pm.EditSuggestions,
    pm.RecentPostActions
FROM 
    ActiveUsers au
JOIN 
    RecentPosts rp ON au.UserId = rp.OwnerDisplayName
JOIN 
    PostMetrics pm ON rp.PostId = pm.PostId
ORDER BY 
    au.Reputation DESC, pm.VoteCount DESC, pm.ViewCount DESC;