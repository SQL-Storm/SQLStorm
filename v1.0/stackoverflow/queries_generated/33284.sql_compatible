
WITH RECURSIVE TaggedPosts AS (
    SELECT 
        p.Id AS PostId, 
        p.Title, 
        p.CreationDate, 
        p.Score, 
        p.ViewCount,
        t.TagName,
        1 AS Level
    FROM 
        Posts p
    JOIN 
        Tags t ON p.Tags LIKE '%' || t.TagName || '%'
    WHERE 
        p.PostTypeId = 1  
    UNION ALL
    SELECT 
        pp.Id AS PostId, 
        pp.Title, 
        pp.CreationDate, 
        pp.Score, 
        pp.ViewCount,
        t.TagName,
        tp.Level + 1
    FROM 
        Posts pp
    JOIN 
        PostLinks pl ON pl.RelatedPostId = pp.Id
    JOIN 
        TaggedPosts tp ON pl.PostId = tp.PostId
    JOIN 
        Tags t ON pp.Tags LIKE '%' || t.TagName || '%'
)
, RankedUsers AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        SUM(v.BountyAmount) AS TotalBounties,
        COUNT(DISTINCT p.Id) AS QuestionsAnswered,
        ROW_NUMBER() OVER (ORDER BY SUM(v.BountyAmount) DESC) AS UserRank
    FROM 
        Users u
    JOIN 
        Posts p ON p.OwnerUserId = u.Id
    JOIN 
        Votes v ON v.PostId = p.Id AND v.VoteTypeId IN (8, 9)  
    GROUP BY 
        u.Id, u.DisplayName
)
SELECT 
    tp.PostId,
    tp.Title,
    tp.CreationDate,
    tp.Score,
    tp.ViewCount,
    tp.TagName,
    ru.DisplayName,
    ru.TotalBounties,
    ru.UserRank
FROM 
    TaggedPosts tp
LEFT JOIN 
    RankedUsers ru ON ru.UserId = (
        SELECT 
            OwnerUserId 
        FROM 
            Posts 
        WHERE 
            Id = tp.PostId 
            AND PostTypeId = 2  
        ORDER BY 
            Score DESC 
        LIMIT 1
    )
WHERE 
    tp.Level = 1
ORDER BY 
    tp.Score DESC, tp.ViewCount DESC
LIMIT 100;
