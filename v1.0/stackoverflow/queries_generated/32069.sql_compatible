
WITH RankedPosts AS (
    SELECT
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.Score,
        p.ViewCount,
        ROW_NUMBER() OVER (PARTITION BY pt.Name ORDER BY p.Score DESC, p.CreationDate DESC) AS RankScore,
        COUNT(DISTINCT v.UserId) FILTER (WHERE v.VoteTypeId = 2) OVER (PARTITION BY p.Id) AS UpVoteCount,
        COUNT(DISTINCT v.UserId) FILTER (WHERE v.VoteTypeId = 3) OVER (PARTITION BY p.Id) AS DownVoteCount,
        STRING_AGG(DISTINCT t.TagName, ', ') OVER (PARTITION BY p.Id) AS Tags
    FROM
        Posts p
    JOIN
        PostTypes pt ON p.PostTypeId = pt.Id
    LEFT JOIN
        Votes v ON p.Id = v.PostId
    LEFT JOIN
        PostsTags ptg ON p.Id = ptg.PostId
    LEFT JOIN
        Tags t ON ptg.TagId = t.Id
    WHERE
        p.CreationDate >= CAST('2024-10-01 12:34:56' AS TIMESTAMP) - INTERVAL '1 year'
),

PostAcceptance AS (
    SELECT
        p.Id AS PostId,
        COALESCE(p.AcceptedAnswerId, -1) AS AcceptedAnswerId,
        COUNT(DISTINCT c.Id) AS CommentCount,
        COUNT(DISTINCT ph.Id) AS ClosedCount
    FROM
        Posts p
    LEFT JOIN
        Comments c ON p.Id = c.PostId
    LEFT JOIN
        PostHistory ph ON p.Id = ph.PostId AND ph.PostHistoryTypeId = 10
    LEFT JOIN
        PostHistory ph2 ON p.Id = ph2.PostId AND ph2.PostHistoryTypeId = 11
    GROUP BY
        p.Id, p.AcceptedAnswerId
),

FinalResult AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.CreationDate,
        rp.Score,
        rp.ViewCount,
        rp.RankScore,
        rp.UpVoteCount,
        rp.DownVoteCount,
        pa.CommentCount,
        pa.ClosedCount,
        rp.Tags,
        CASE 
            WHEN pa.AcceptedAnswerId <> -1 THEN 'Accepted'
            ELSE 'Not Accepted'
        END AS AcceptanceStatus
    FROM
        RankedPosts rp
    JOIN
        PostAcceptance pa ON rp.PostId = pa.PostId
)

SELECT
    PostId,
    Title,
    CreationDate,
    Score,
    ViewCount,
    RankScore,
    UpVoteCount,
    DownVoteCount,
    CommentCount,
    ClosedCount,
    Tags,
    AcceptanceStatus
FROM
    FinalResult
WHERE 
    RankScore <= 5
ORDER BY 
    CreationDate DESC;
