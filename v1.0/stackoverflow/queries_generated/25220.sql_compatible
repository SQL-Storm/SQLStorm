
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.Body,
        COUNT(c.Id) AS CommentCount,
        SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END) AS UpVoteCount,
        SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END) AS DownVoteCount,
        STRING_AGG(DISTINCT t.TagName, ', ') AS Tags
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    LEFT JOIN 
        (SELECT UNNEST(SUBSTRING(p.Tags, 2, LENGTH(p.Tags) - 2)) AS tag_id FROM Posts p) AS tag_id ON TRUE
    LEFT JOIN 
        Tags t ON t.Id = tag_id
    WHERE 
        p.PostTypeId = 1 AND 
        p.CreationDate >= CAST('2024-10-01' AS DATE) - INTERVAL '1 year'
    GROUP BY 
        p.Id, p.Title, p.CreationDate, p.Body
),
PostStats AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.CreationDate,
        rp.Body,
        rp.CommentCount,
        rp.UpVoteCount,
        rp.DownVoteCount,
        rp.Tags,
        DENSE_RANK() OVER (ORDER BY rp.UpVoteCount - rp.DownVoteCount DESC) AS PopularityRank
    FROM 
        RankedPosts rp
),
TopPosts AS (
    SELECT 
        p.*,
        CASE 
            WHEN p.PopularityRank <= 10 THEN 'Top 10'
            ELSE 'Others'
        END AS PopularityCategory
    FROM 
        PostStats p
)
SELECT 
    p.PostId,
    p.Title,
    p.CreationDate,
    p.CommentCount,
    p.UpVoteCount,
    p.DownVoteCount,
    p.Tags,
    p.PopularityCategory
FROM 
    TopPosts p
ORDER BY 
    p.PopularityRank, p.CommentCount DESC;
