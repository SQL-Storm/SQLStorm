SELECT 
    p.Id AS PostId,
    p.Title,
    u.DisplayName AS Owner,
    p.CreationDate,
    p.Score,
    p.ViewCount,
    c.Comment AS LatestComment
FROM 
    Posts p
JOIN 
    Users u ON p.OwnerUserId = u.Id
LEFT JOIN 
    (SELECT 
         PostId, 
         Comment, 
         ROW_NUMBER() OVER (PARTITION BY PostId ORDER BY CreationDate DESC) AS rn
     FROM 
         Comments) c ON p.Id = c.PostId AND c.rn = 1
WHERE 
    p.PostTypeId = 1 
ORDER BY 
    p.CreationDate DESC
LIMIT 10;