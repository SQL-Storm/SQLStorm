WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.ViewCount,
        p.Score,
        ROW_NUMBER() OVER (PARTITION BY p.PostTypeId ORDER BY p.CreationDate DESC) AS Rank
    FROM 
        Posts p
    WHERE 
        p.CreationDate < cast('2024-10-01 12:34:56' as timestamp) - INTERVAL '1 year'
        AND p.Score IS NOT NULL
),
UserActivity AS (
    SELECT 
        u.Id AS UserId,
        COUNT(DISTINCT v.PostId) AS TotalVotes,
        SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END) AS UpVotes,
        SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END) AS DownVotes
    FROM 
        Users u
    LEFT JOIN 
        Votes v ON u.Id = v.UserId
    GROUP BY 
        u.Id
),
ClosedPosts AS (
    SELECT 
        ph.PostId,
        ph.CreationDate,
        ph.UserId,
        ph.Comment,
        ROW_NUMBER() OVER (PARTITION BY ph.PostId ORDER BY ph.CreationDate DESC) AS CloseRank
    FROM 
        PostHistory ph
    WHERE 
        ph.PostHistoryTypeId IN (10, 11) 
),
Combined AS (
    SELECT 
        p.Title,
        p.ViewCount,
        u.DisplayName AS UserName,
        ua.UpVotes,
        ua.DownVotes,
        (SELECT COUNT(*) FROM Comments c WHERE c.PostId = p.Id) AS CommentCount,
        COALESCE(cp.Comment, 'No closure comment') AS ClosureComment,
        COALESCE(cp.CreationDate, '1970-01-01 00:00:00') AS ClosureDate
    FROM 
        RankedPosts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    LEFT JOIN 
        UserActivity ua ON u.Id = ua.UserId
    LEFT JOIN 
        ClosedPosts cp ON p.Id = cp.PostId AND cp.CloseRank = 1
    WHERE 
        p.Rank <= 5
)
SELECT 
    c.*,
    'Category: ' || CASE 
        WHEN c.UpVotes > c.DownVotes THEN 'Positive'
        WHEN c.UpVotes < c.DownVotes THEN 'Negative' 
        ELSE 'Neutral' 
    END AS VoteCategory,
    CASE 
        WHEN ClosureDate IS NOT NULL AND ClosureDate <> '1970-01-01 00:00:00' THEN 'Closed'
        ELSE 'Open'
    END AS PostStatus
FROM 
    Combined c
ORDER BY 
    c.ViewCount DESC,
    c.UpVotes DESC;