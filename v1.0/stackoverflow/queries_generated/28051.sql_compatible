
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.Tags,
        p.ViewCount,
        p.Score,
        COUNT(c.Id) AS CommentCount,
        COALESCE(MAX(v.CreationDate), DATE '1900-01-01') AS LastVoteDate,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.CreationDate DESC) AS PostRank
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    WHERE 
        p.CreationDate >= DATE '2024-10-01' - INTERVAL '1 year' 
    GROUP BY 
        p.Id, p.Title, p.Body, p.Tags, p.ViewCount, p.Score
),
TopPosts AS (
    SELECT 
        rp.PostId, 
        rp.Title, 
        rp.Body, 
        rp.ViewCount, 
        rp.Score, 
        rp.CommentCount,
        STRING_AGG(DISTINCT t.TagName, ', ') AS TagList
    FROM 
        RankedPosts rp
    LEFT JOIN 
        Tags t ON rp.Tags LIKE CONCAT('%', t.TagName, '%')
    WHERE 
        rp.PostRank <= 3 
    GROUP BY 
        rp.PostId, rp.Title, rp.Body, rp.ViewCount, rp.Score, rp.CommentCount
),
HighScoringPosts AS (
    SELECT 
        PostId, 
        Title, 
        Body, 
        ViewCount, 
        Score, 
        CommentCount, 
        TagList
    FROM 
        TopPosts
    WHERE 
        Score > 10 
)
SELECT 
    hp.PostId,
    hp.Title,
    hp.Body,
    hp.ViewCount,
    hp.Score,
    hp.CommentCount,
    hp.TagList,
    u.DisplayName AS OwnerDisplayName,
    COUNT(b.Id) AS BadgeCount,
    MAX(b.Class) AS HighestBadgeClass 
FROM 
    HighScoringPosts hp
JOIN 
    Users u ON hp.OwnerUserId = u.Id
LEFT JOIN 
    Badges b ON u.Id = b.UserId
GROUP BY 
    hp.PostId, hp.Title, hp.Body, hp.ViewCount, hp.Score, hp.CommentCount, hp.TagList, u.DisplayName
ORDER BY 
    hp.Score DESC, hp.ViewCount DESC;
