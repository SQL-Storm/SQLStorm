WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.Score,
        u.DisplayName AS OwnerDisplayName,
        ROW_NUMBER() OVER (PARTITION BY p.Tags ORDER BY p.CreationDate DESC) AS Rank
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    WHERE 
        p.PostTypeId = 1 AND 
        p.Score > 10 
),
TopTags AS (
    SELECT 
        Tags,
        COUNT(*) AS QuestionCount
    FROM 
        RankedPosts
    WHERE 
        Rank <= 5
    GROUP BY 
        Tags
),
FeaturedPosts AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.CreationDate,
        rp.Score,
        rp.OwnerDisplayName,
        tt.QuestionCount
    FROM 
        RankedPosts rp
    JOIN 
        TopTags tt ON rp.Tags = tt.Tags
    WHERE 
        rp.Rank <= 5
)
SELECT 
    fp.Title,
    fp.OwnerDisplayName,
    fp.Score,
    fp.CreationDate,
    tt.QuestionCount
FROM 
    FeaturedPosts fp
JOIN 
    Tags t ON t.TagName = ANY(string_to_array(fp.Tags, '>'))
WHERE 
    t.Count > 5 
ORDER BY 
    fp.Score DESC, 
    fp.CreationDate DESC;