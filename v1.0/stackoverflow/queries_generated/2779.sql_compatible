
WITH RankedPosts AS (
    SELECT 
        p.Id,
        p.Title,
        p.CreationDate,
        p.OwnerUserId,
        p.Score,
        p.ViewCount,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.Score DESC) AS UserRank,
        COUNT(c.Id) OVER (PARTITION BY p.Id) AS CommentCount
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    WHERE 
        p.PostTypeId = 1  
),
TopUsers AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        SUM(p.Score) AS TotalScore,
        COUNT(DISTINCT p.Id) AS QuestionCount
    FROM 
        Users u
    LEFT JOIN 
        Posts p ON u.Id = p.OwnerUserId
    WHERE 
        p.PostTypeId = 1
    GROUP BY 
        u.Id, u.DisplayName
),
ClosedPosts AS (
    SELECT 
        ph.PostId,
        ph.CreationDate AS CloseDate,
        prc.Comment AS CloseReason
    FROM 
        PostHistory ph
    INNER JOIN 
        CloseReasonTypes prc ON ph.Comment = CAST(prc.Id AS CHAR)
    WHERE 
        ph.PostHistoryTypeId = 10
)
SELECT 
    pu.DisplayName,
    pu.QuestionCount,
    pu.TotalScore,
    rp.Title,
    rp.Score AS PostScore,
    rp.ViewCount,
    rp.CommentCount,
    cp.CloseDate,
    cp.CloseReason
FROM 
    TopUsers pu
JOIN 
    RankedPosts rp ON pu.UserId = rp.OwnerUserId
LEFT JOIN 
    ClosedPosts cp ON rp.Id = cp.PostId
WHERE 
    pu.TotalScore > 100
ORDER BY 
    pu.TotalScore DESC, rp.Score DESC
LIMIT 50;
