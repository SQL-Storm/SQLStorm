
WITH PostStats AS (
    SELECT 
        P.Id AS PostId,
        P.Title,
        P.CreationDate,
        P.ViewCount,
        P.Score,
        COUNT(DISTINCT C.Id) AS CommentCount,
        COUNT(DISTINCT V.Id) AS VoteCount,
        SUM(CASE WHEN V.VoteTypeId = 2 THEN 1 ELSE 0 END) AS UpVoteCount,
        SUM(CASE WHEN V.VoteTypeId = 3 THEN 1 ELSE 0 END) AS DownVoteCount,
        U.Reputation AS OwnerReputation
    FROM 
        Posts P
    LEFT JOIN 
        Comments C ON P.Id = C.PostId
    LEFT JOIN 
        Votes V ON P.Id = V.PostId
    LEFT JOIN 
        Users U ON P.OwnerUserId = U.Id
    WHERE 
        P.CreationDate >= DATE_SUB(CURDATE(), INTERVAL 30 DAY) 
    GROUP BY 
        P.Id, P.Title, P.CreationDate, P.ViewCount, P.Score, U.Reputation
)

SELECT 
    PostId,
    Title,
    CreationDate,
    ViewCount,
    Score,
    CommentCount,
    VoteCount,
    UpVoteCount,
    DownVoteCount,
    OwnerReputation,
    ROUND((ViewCount / NULLIF(VoteCount, 0)), 2) AS ViewsPerVote,
    ROUND((ViewCount / NULLIF(CommentCount, 0)), 2) AS ViewsPerComment,
    ROUND((Score / NULLIF(CommentCount, 0)), 2) AS ScorePerComment,
    ROUND((Score / NULLIF(VoteCount, 0)), 2) AS ScorePerVote
FROM 
    PostStats
ORDER BY 
    ViewCount DESC
LIMIT 10;
