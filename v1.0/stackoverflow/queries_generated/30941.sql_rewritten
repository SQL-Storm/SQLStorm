WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.CreationDate,
        p.OwnerUserId,
        p.PostTypeId,
        RANK() OVER (PARTITION BY p.PostTypeId ORDER BY p.CreationDate DESC) AS PostRank
    FROM 
        Posts p
    WHERE 
        p.CreationDate >= cast('2024-10-01 12:34:56' as timestamp) - INTERVAL '1 year' 
        AND p.ViewCount > 100
),
UserStatistics AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        COALESCE(SUM(v.BountyAmount), 0) AS TotalBounties,
        COUNT(DISTINCT b.Id) AS BadgeCount,
        SUM(COALESCE(p.Score, 0)) AS TotalScore
    FROM 
        Users u
    LEFT JOIN 
        Votes v ON u.Id = v.UserId
    LEFT JOIN 
        Badges b ON u.Id = b.UserId
    LEFT JOIN 
        Posts p ON u.Id = p.OwnerUserId
    GROUP BY 
        u.Id
),
PostHistoryDetails AS (
    SELECT 
        ph.PostId,
        ph.CreationDate,
        ph.UserId,
        ph.Comment,
        p.Title,
        p.Body,
        ROW_NUMBER() OVER (PARTITION BY ph.PostId ORDER BY ph.CreationDate DESC) AS HistoryRank
    FROM 
        PostHistory ph
    JOIN 
        Posts p ON ph.PostId = p.Id
    WHERE 
        ph.PostHistoryTypeId IN (10, 11)  
),
RecentPosts AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.Body,
        rp.CreationDate,
        us.DisplayName,
        us.TotalBounties,
        us.BadgeCount,
        us.TotalScore,
        h.Comment AS LastAction,
        h.CreationDate AS ActionDate
    FROM 
        RankedPosts rp
    LEFT JOIN 
        UserStatistics us ON rp.OwnerUserId = us.UserId
    LEFT JOIN 
        PostHistoryDetails h ON rp.PostId = h.PostId AND h.HistoryRank = 1
)

SELECT 
    p.PostId,
    p.Title,
    p.Body,
    p.CreationDate,
    p.DisplayName AS OwnerDisplayName,
    COALESCE(p.TotalBounties, 0) AS TotalBounties,
    COALESCE(p.BadgeCount, 0) AS BadgeCount,
    COALESCE(p.TotalScore, 0) AS TotalScore,
    CASE 
        WHEN h.Comment IS NOT NULL THEN 'Closed/Reopened'
        ELSE 'Active'
    END AS PostStatus,
    COALESCE(h.LastAction, 'No recent actions') AS LastAction,
    h.ActionDate AS LastActionDate
FROM 
    RecentPosts p
LEFT JOIN 
    PostHistoryDetails h ON p.PostId = h.PostId
ORDER BY 
    p.CreationDate DESC;