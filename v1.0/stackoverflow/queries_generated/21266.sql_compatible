
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.Score,
        p.ViewCount,
        p.AnswerCount,
        p.ClosedDate,
        RANK() OVER (PARTITION BY p.OwnerUserId ORDER BY p.Score DESC) AS RankByScore,
        ARRAY_AGG(DISTINCT t.TagName) AS TagsList
    FROM 
        Posts p
    LEFT JOIN 
        Tags t ON t.Id = ANY(string_to_array(substring(p.Tags, 2, length(p.Tags) - 2), '><')::text[])
    WHERE 
        p.CreationDate >= CAST('2024-10-01 12:34:56' AS TIMESTAMP) - INTERVAL '1 YEAR'
    GROUP BY 
        p.Id, p.Title, p.CreationDate, p.Score, p.ViewCount, p.AnswerCount, p.ClosedDate
),
PostHistoryDetails AS (
    SELECT 
        ph.PostId,
        COUNT(*) AS EditCount,
        MAX(ph.CreationDate) AS LastEditDate,
        ARRAY_AGG(DISTINCT ph.Comment) AS EditComments
    FROM 
        PostHistory ph
    WHERE 
        ph.PostHistoryTypeId IN (4, 5, 6) 
    GROUP BY 
        ph.PostId
),
UserActivity AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        COALESCE(SUM(v.BountyAmount), 0) AS TotalBounty,
        COUNT(DISTINCT c.Id) AS CommentCount,
        COUNT(DISTINCT ph.PostId) AS EditedPostCount
    FROM 
        Users u
    LEFT JOIN 
        Votes v ON v.UserId = u.Id
    LEFT JOIN 
        Comments c ON c.UserId = u.Id
    LEFT JOIN 
        PostHistory ph ON ph.UserId = u.Id 
    WHERE 
        u.Reputation > 5000
    GROUP BY 
        u.Id, u.DisplayName
)
SELECT 
    rp.PostId,
    rp.Title,
    rp.CreationDate,
    rp.Score,
    rp.ViewCount,
    rp.AnswerCount,
    rp.ClosedDate,
    CASE 
        WHEN rp.RankByScore = 1 THEN 'Top Post' 
        ELSE 'Regular Post' 
    END AS PostRank,
    pd.EditCount,
    pd.LastEditDate,
    pd.EditComments,
    ua.DisplayName AS UserDisplayName,
    ua.TotalBounty,
    ua.CommentCount,
    ua.EditedPostCount,
    CASE 
        WHEN ua.TotalBounty > 0 THEN 'Bounty Hunter' 
        ELSE 'Regular User' 
    END AS UserType,
    COALESCE(rp.TagsList, '{}') AS Tags
FROM 
    RankedPosts rp
LEFT JOIN 
    PostHistoryDetails pd ON pd.PostId = rp.PostId
LEFT JOIN 
    Users u ON u.Id = rp.OwnerUserId
LEFT JOIN 
    UserActivity ua ON ua.UserId = u.Id
WHERE 
    rp.AnswerCount > 5
    AND (rp.ClosedDate IS NULL OR rp.ClosedDate < CAST('2024-10-01 12:34:56' AS TIMESTAMP) - INTERVAL '3 MONTHS')
ORDER BY 
    rp.Score DESC, 
    rp.CreationDate DESC;
