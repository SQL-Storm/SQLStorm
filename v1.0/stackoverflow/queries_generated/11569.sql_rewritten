WITH PostStats AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Score,
        p.CreationDate,
        COUNT(c.Id) AS CommentCount,
        COUNT(v.Id) AS VoteCount,
        pt.Name AS PostType,
        COUNT(b.Id) AS BadgeCount
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    LEFT JOIN 
        Users u ON p.OwnerUserId = u.Id
    LEFT JOIN 
        Badges b ON u.Id = b.UserId
    LEFT JOIN 
        PostTypes pt ON p.PostTypeId = pt.Id
    GROUP BY 
        p.Id, p.Title, p.Score, p.CreationDate, pt.Name
),
UserStats AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        SUM(COALESCE(bs.BadgeCount, 0)) AS TotalBadges,
        SUM(COALESCE(ps.CommentCount, 0)) AS TotalComments,
        SUM(COALESCE(ps.VoteCount, 0)) AS TotalVotes,
        SUM(COALESCE(ps.Score, 0)) AS TotalScore
    FROM 
        Users u
    LEFT JOIN 
        Badges bs ON u.Id = bs.UserId
    LEFT JOIN 
        PostStats ps ON u.Id = ps.PostId  
    GROUP BY 
        u.Id, u.DisplayName
)
SELECT 
    us.UserId,
    us.DisplayName,
    us.TotalBadges,
    us.TotalComments,
    us.TotalVotes,
    us.TotalScore
FROM 
    UserStats us
ORDER BY 
    us.TotalScore DESC;