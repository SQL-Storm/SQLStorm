SELECT 
    pt.Name AS PostType, 
    COUNT(p.Id) AS TotalPosts, 
    COALESCE(AVG(p.ViewCount), 0) AS AvgViewCount, 
    SUM(v.VoteTypeId = 2) AS TotalUpVotes, 
    SUM(v.VoteTypeId = 3) AS TotalDownVotes 
FROM 
    Posts p
JOIN 
    PostTypes pt ON p.PostTypeId = pt.Id
LEFT JOIN 
    Votes v ON p.Id = v.PostId
GROUP BY 
    pt.Name
ORDER BY 
    TotalPosts DESC;