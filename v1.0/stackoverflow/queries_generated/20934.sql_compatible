
WITH RecentPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.ViewCount,
        COALESCE(SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END), 0) AS UpVotes,
        COALESCE(SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END), 0) AS DownVotes,
        ROW_NUMBER() OVER (PARTITION BY p.Id ORDER BY p.CreationDate DESC) AS Rank
    FROM 
        Posts p
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    WHERE 
        p.CreationDate > (CAST('2024-10-01 12:34:56' AS TIMESTAMP) - INTERVAL '30 days')
    GROUP BY 
        p.Id, p.Title, p.CreationDate, p.ViewCount
    HAVING 
        COUNT(DISTINCT v.Id) > 0
),

TopTags AS (
    SELECT 
        t.TagName,
        COUNT(DISTINCT p.Id) AS PostCount
    FROM 
        Tags t
    JOIN 
        Posts p ON p.Tags LIKE CONCAT('%', t.TagName, '%')
    GROUP BY 
        t.TagName
    ORDER BY 
        PostCount DESC
    LIMIT 10
),

PostsWithTags AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.CreationDate,
        rp.UpVotes,
        rp.DownVotes,
        tt.TagName
    FROM 
        RecentPosts rp
    LEFT JOIN 
        Posts p ON rp.PostId = p.Id
    LEFT JOIN 
        Tags tt ON p.Tags LIKE CONCAT('%', tt.TagName, '%')
)

SELECT 
    pwt.PostId,
    pwt.Title,
    pwt.CreationDate,
    pwt.UpVotes,
    pwt.DownVotes,
    pwt.TagName,
    CASE 
        WHEN pwt.UpVotes > pwt.DownVotes THEN 'Positive'
        WHEN pwt.UpVotes < pwt.DownVotes THEN 'Negative'
        ELSE 'Neutral'
    END AS Sentiment,
    (SELECT STRING_AGG(DISTINCT b.Name, ', ') 
     FROM Badges b 
     WHERE b.UserId = pwt.OwnerUserId) AS UserBadges
FROM 
    PostsWithTags pwt
LEFT JOIN 
    Users u ON u.Id = pwt.OwnerUserId
WHERE 
    pwt.UpVotes - pwt.DownVotes > 5 
    OR pwt.CreationDate > (CAST('2024-10-01 12:34:56' AS TIMESTAMP) - INTERVAL '7 days')
ORDER BY 
    pwt.CreationDate DESC;
