WITH RecursivePostHistory AS (
    SELECT 
        ph.Id,
        ph.PostId,
        ph.PostHistoryTypeId,
        ph.UserId,
        ph.CreationDate,
        ph.Comment,
        ph.Text,
        1 AS Depth
    FROM 
        PostHistory ph
    WHERE 
        ph.PostHistoryTypeId IN (10, 11)  

    UNION ALL

    SELECT 
        ph.Id,
        ph.PostId,
        ph.PostHistoryTypeId,
        ph.UserId,
        ph.CreationDate,
        ph.Comment,
        ph.Text,
        rp.Depth + 1
    FROM 
        PostHistory ph
    JOIN 
        RecursivePostHistory rp ON ph.PostId = rp.PostId
    WHERE 
        ph.CreationDate < rp.CreationDate  
),
RecentUserActivities AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        COUNT(b.Id) AS BadgeCount,
        SUM(v.BountyAmount) AS TotalBountyAwarded
    FROM 
        Users u
    LEFT JOIN 
        Badges b ON b.UserId = u.Id
    LEFT JOIN 
        Votes v ON v.UserId = u.Id
    GROUP BY 
        u.Id, u.DisplayName
),
TopPosts AS (
    SELECT 
        p.Id,
        p.Title,
        COUNT(c.Id) AS CommentCount,
        SUM(v.VoteTypeId = 2) AS UpVotes, 
        SUM(v.VoteTypeId = 3) AS DownVotes 
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON c.PostId = p.Id
    LEFT JOIN 
        Votes v ON v.PostId = p.Id
    WHERE 
        p.PostTypeId = 1 
    GROUP BY 
        p.Id, p.Title
),
FinalResults AS (
    SELECT 
        p.Title,
        u.DisplayName AS Owner,
        p.CommentCount,
        tp.UpVotes,
        tp.DownVotes,
        SUM(ph.PostHistoryTypeId IN (10, 11)) AS ClosureCount,
        COALESCE(ru.BadgeCount, 0) AS UserBadgeCount,
        COALESCE(ru.TotalBountyAwarded, 0) AS UserTotalBounty
    FROM 
        TopPosts tp
    JOIN 
        Posts p ON tp.Id = p.Id
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    LEFT JOIN 
        RecentUserActivities ru ON u.Id = ru.UserId
    LEFT JOIN 
        RecursivePostHistory ph ON p.Id = ph.PostId
    GROUP BY 
        p.Title, u.DisplayName, tp.UpVotes, tp.DownVotes, ru.BadgeCount, ru.TotalBountyAwarded
)
SELECT 
    Title,
    Owner,
    CommentCount,
    UpVotes,
    DownVotes,
    ClosureCount,
    UserBadgeCount,
    UserTotalBounty
FROM 
    FinalResults
ORDER BY 
    UpVotes DESC, ClosureCount DESC;