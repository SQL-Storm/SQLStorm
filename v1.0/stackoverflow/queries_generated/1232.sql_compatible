
WITH UserStats AS (
    SELECT 
        u.Id AS UserId, 
        u.DisplayName, 
        u.Reputation, 
        u.CreationDate,
        SUM(v.BountyAmount) AS TotalBounties,
        COUNT(DISTINCT p.Id) AS TotalPosts,
        COUNT(DISTINCT c.Id) AS TotalComments,
        SUM(COALESCE(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END, 0)) AS UpVoteCount,
        SUM(COALESCE(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END, 0)) AS DownVoteCount
    FROM Users u
    LEFT JOIN Posts p ON u.Id = p.OwnerUserId
    LEFT JOIN Comments c ON u.Id = c.UserId
    LEFT JOIN Votes v ON u.Id = v.UserId 
    GROUP BY u.Id, u.DisplayName, u.Reputation, u.CreationDate
),
ClosedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.OwnerUserId,
        MIN(CASE WHEN ph.PostHistoryTypeId = 10 THEN ph.CreationDate END) AS ClosedDate,
        COUNT(DISTINCT ph.UserId) AS ClosingVoteCount
    FROM Posts p
    LEFT JOIN PostHistory ph ON p.Id = ph.PostId
    WHERE ph.PostHistoryTypeId = 10
    GROUP BY p.Id, p.Title, p.OwnerUserId
),
UserPostDetails AS (
    SELECT 
        us.UserId,
        us.DisplayName,
        us.Reputation,
        us.TotalBounties,
        us.TotalPosts,
        us.TotalComments,
        us.UpVoteCount,
        us.DownVoteCount,
        cp.ClosedDate,
        cp.ClosingVoteCount
    FROM UserStats us
    LEFT JOIN ClosedPosts cp ON us.UserId = cp.OwnerUserId
)
SELECT 
    upd.DisplayName,
    upd.Reputation,
    upd.TotalPosts,
    upd.TotalComments,
    COALESCE(upd.ClosedDate, 'No Posts Closed') AS ClosedPostDate,
    COALESCE(upd.ClosingVoteCount, 0) AS ClosingVoteCount,
    (upd.UpVoteCount - upd.DownVoteCount) AS NetVoteCount,
    RANK() OVER (ORDER BY upd.Reputation DESC) AS ReputationRank
FROM UserPostDetails upd
WHERE upd.TotalPosts > 5
ORDER BY upd.Reputation DESC, upd.TotalPosts DESC;
