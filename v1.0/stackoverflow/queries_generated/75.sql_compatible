
WITH RecentPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.Score,
        p.ViewCount,
        EXTRACT(EPOCH FROM (TIMESTAMP '2024-10-01 12:34:56' - p.CreationDate)) / 3600 AS HoursSinceCreated,
        COUNT(c.Id) AS CommentCount,
        SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END) AS UpVoteCount,
        SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END) AS DownVoteCount
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    WHERE 
        p.CreationDate >= TIMESTAMP '2024-10-01 12:34:56' - INTERVAL '30 days'
    GROUP BY 
        p.Id, p.Title, p.CreationDate, p.Score, p.ViewCount
),
PostRankings AS (
    SELECT 
        rp.*,
        RANK() OVER (ORDER BY (rp.Score + rp.UpVoteCount - rp.DownVoteCount) DESC) AS RankScore
    FROM 
        RecentPosts rp
),
ClosedPosts AS (
    SELECT 
        ph.PostId,
        ph.CreationDate AS CloseDate,
        pr.Title AS PostTitle,
        COALESCE(SUM(CASE WHEN ph.PostHistoryTypeId IN (10, 12) THEN 1 ELSE 0 END), 0) AS CloseVotesCount
    FROM 
        PostHistory ph
    JOIN 
        Posts pr ON ph.PostId = pr.Id
    WHERE 
        ph.CreatedDate >= TIMESTAMP '2024-10-01 12:34:56' - INTERVAL '1 year'
    GROUP BY 
        ph.PostId, pr.Title, ph.CreationDate
)
SELECT 
    p.Title,
    p.HoursSinceCreated,
    p.UpVoteCount,
    p.DownVoteCount,
    p.RankScore,
    cp.CloseDate,
    cp.CloseVotesCount
FROM 
    PostRankings p
LEFT JOIN 
    ClosedPosts cp ON p.PostId = cp.PostId
WHERE 
    (p.RankScore <= 10 OR cp.CloseVotesCount > 0)
ORDER BY 
    CASE WHEN cp.CloseVotesCount > 0 THEN 0 ELSE 1 END, 
    p.RankScore;
