WITH UserVoteStats AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        COUNT(v.Id) AS TotalVotes,
        SUM(CASE WHEN v.VoteTypeId IN (2, 1) THEN 1 ELSE 0 END) AS UpVotes,
        SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END) AS DownVotes,
        RANK() OVER (ORDER BY COUNT(v.Id) DESC) AS VoteRank
    FROM 
        Users u
    LEFT JOIN 
        Votes v ON u.Id = v.UserId
    GROUP BY 
        u.Id, u.DisplayName
),
PostMetrics AS (
    SELECT 
        p.Id AS PostId,
        p.OwnerUserId,
        p.PostTypeId,
        p.Title,
        p.Score,
        p.ViewCount,
        COALESCE(c.CommentCount, 0) AS CommentCount,
        COUNT(DISTINCT pl.RelatedPostId) AS RelatedPostCount,
        LAG(p.CreationDate) OVER (PARTITION BY p.OwnerUserId ORDER BY p.CreationDate) AS PreviousPostDate
    FROM 
        Posts p
    LEFT JOIN 
        (SELECT PostId, COUNT(*) AS CommentCount FROM Comments GROUP BY PostId) c ON p.Id = c.PostId
    LEFT JOIN 
        PostLinks pl ON p.Id = pl.PostId
    GROUP BY 
        p.Id, p.OwnerUserId, p.PostTypeId, p.Title, p.Score, p.ViewCount, c.CommentCount
),
PostAnalysis AS (
    SELECT 
        pm.PostId,
        pm.ViewCount,
        pm.Score,
        pm.CommentCount,
        pm.RelatedPostCount,
        CASE 
            WHEN pm.ViewCount > 1000 THEN 'High'
            WHEN pm.ViewCount BETWEEN 100 AND 1000 THEN 'Medium'
            ELSE 'Low'
        END AS ViewCategory,
        CASE 
            WHEN pm.Score >= 0 THEN 'Positive'
            ELSE 'Negative'
        END AS ScoreCategory,
        pm.CreationDate,
        DATEDIFF(cast('2024-10-01 12:34:56' as timestamp), pm.CreationDate) AS DaysSincePost
    FROM 
        PostMetrics pm
),
FinalReport AS (
    SELECT 
        uvs.DisplayName,
        pa.ViewCount,
        pa.Score,
        pa.CommentCount,
        pa.RelatedPostCount,
        pa.ViewCategory,
        pa.ScoreCategory,
        pa.DaysSincePost
    FROM 
        UserVoteStats uvs
    JOIN 
        PostAnalysis pa ON uvs.UserId = pa.OwnerUserId
    WHERE 
        pa.DaysSincePost < 30
)
SELECT 
    *
FROM 
    FinalReport
WHERE 
    (CommentCount > 5 OR RelatedPostCount > 2)
ORDER BY 
    Score DESC, ViewCount DESC;