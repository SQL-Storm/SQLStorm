
WITH RankedPosts AS (
    SELECT 
        p.Id,
        p.Title,
        p.Score,
        p.ViewCount,
        p.CreationDate,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.Score DESC) AS PostRank
    FROM 
        Posts p
    WHERE 
        p.CreationDate >= DATE_SUB(DATE('2024-10-01'), INTERVAL 1 YEAR)
        AND p.Score > 0
),
UserStats AS (
    SELECT
        u.Id AS UserId,
        u.DisplayName,
        SUM(CASE WHEN b.Class = 1 THEN 1 ELSE 0 END) AS GoldBadges,
        SUM(CASE WHEN b.Class = 2 THEN 1 ELSE 0 END) AS SilverBadges,
        SUM(CASE WHEN b.Class = 3 THEN 1 ELSE 0 END) AS BronzeBadges,
        COUNT(DISTINCT p.Id) AS PostCount,
        COUNT(DISTINCT c.Id) AS CommentCount
    FROM 
        Users u
    LEFT JOIN 
        Badges b ON u.Id = b.UserId
    LEFT JOIN 
        Posts p ON u.Id = p.OwnerUserId
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    GROUP BY 
        u.Id, u.DisplayName
),
RecentPosts AS (
    SELECT 
        p.Id,
        p.Title,
        p.OwnerUserId,
        p.Score,
        p.ViewCount,
        COALESCE(c.UserDisplayName, 'Community User') AS LastCommenter,
        MAX(c.CreationDate) AS LastCommentDate
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    WHERE 
        p.CreationDate >= DATE_SUB(DATE('2024-10-01'), INTERVAL 3 MONTH)
    GROUP BY 
        p.Id, p.Title, p.OwnerUserId, p.Score, p.ViewCount, c.UserDisplayName
)
SELECT 
    us.UserId,
    us.DisplayName,
    us.PostCount,
    us.CommentCount,
    rp.Title AS TopPostTitle,
    rp.Score AS TopPostScore,
    rp.ViewCount AS TopPostViews,
    rp.LastCommenter,
    rp.LastCommentDate,
    CASE 
        WHEN us.GoldBadges > 0 THEN 'Gold Champion' 
        WHEN us.SilverBadges > 0 THEN 'Silver Star' 
        ELSE 'Newbie' 
    END AS UserRank,
    CASE 
        WHEN MAX(rp.LastCommentDate) IS NOT NULL THEN 'Active' 
        ELSE 'Inactive' 
    END AS ActivityStatus
FROM 
    UserStats us
LEFT JOIN 
    RankedPosts rp ON us.UserId = rp.OwnerUserId AND rp.PostRank = 1
GROUP BY 
    us.UserId, us.DisplayName, us.PostCount, us.CommentCount, rp.Title, rp.Score, rp.ViewCount, rp.LastCommenter, rp.LastCommentDate
ORDER BY 
    us.PostCount DESC, us.CommentCount DESC
LIMIT 50;
