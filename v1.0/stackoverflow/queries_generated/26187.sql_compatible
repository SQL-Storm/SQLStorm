
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.Score,
        p.Body,
        u.DisplayName AS OwnerDisplayName,
        p.Views,
        ROW_NUMBER() OVER (PARTITION BY SUBSTRING(p.Tags, '[^<]*') ORDER BY p.CreationDate DESC) AS RN
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    WHERE 
        p.PostTypeId = 1  
        AND p.Score > 0  
),
RecentActiveUsers AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        COUNT(DISTINCT p.Id) AS PostsCount,
        SUM(CASE WHEN p.CreationDate >= (CAST('2024-10-01 12:34:56' AS TIMESTAMP) - INTERVAL '30 days') THEN 1 ELSE 0 END) AS RecentPostsCount
    FROM 
        Users u
    JOIN 
        Posts p ON u.Id = p.OwnerUserId
    GROUP BY 
        u.Id, u.DisplayName
    HAVING 
        COUNT(DISTINCT p.Id) >= 5  
)
SELECT 
    rp.PostId,
    rp.Title,
    rp.CreationDate,
    rp.Score,
    rp.Body,
    rp.OwnerDisplayName,
    rp.Views,
    rau.DisplayName AS ActiveUser,
    rau.RecentPostsCount
FROM 
    RankedPosts rp
JOIN 
    RecentActiveUsers rau ON rp.OwnerDisplayName = rau.DisplayName
WHERE 
    rp.RN <= 3  
ORDER BY 
    rp.Views DESC,  
    rp.CreationDate DESC  
LIMIT 100;
