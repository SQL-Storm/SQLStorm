WITH PostStats AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Score,
        p.ViewCount,
        COALESCE(ABS(p.LastActivityDate - p.CreationDate), 0) AS ActivityDuration,
        COUNT(c.Id) AS CommentCount,
        COUNT(v.Id) AS VoteCount
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    GROUP BY 
        p.Id, p.Title, p.Score, p.ViewCount, p.CreationDate, p.LastActivityDate
),
TopPosts AS (
    SELECT 
        PostId,
        Title,
        Score,
        ViewCount,
        ActivityDuration,
        CommentCount,
        VoteCount,
        ROW_NUMBER() OVER (ORDER BY Score DESC) AS PostRank
    FROM 
        PostStats
)
SELECT 
    PostId,
    Title,
    Score,
    ViewCount,
    ActivityDuration,
    CommentCount,
    VoteCount
FROM 
    TopPosts
WHERE 
    PostRank <= 10;