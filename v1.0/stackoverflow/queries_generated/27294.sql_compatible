
WITH RecentPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.CreationDate,
        p.OwnerUserId,
        u.DisplayName AS OwnerDisplayName,
        LENGTH(string_to_array(substring(p.Tags, 2, LENGTH(p.Tags) - 2), '> <')) AS TagCount,
        (SELECT COUNT(*) FROM Comments c WHERE c.PostId = p.Id) AS CommentCount,
        (SELECT COUNT(*) FROM Votes v WHERE v.PostId = p.Id AND v.VoteTypeId = 2) AS UpVoteCount
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    WHERE 
        p.CreationDate >= TIMESTAMP '2024-10-01 12:34:56' - INTERVAL '30 days'  
        AND p.PostTypeId = 1  
),
PostStatistics AS (
    SELECT 
        PostId,
        Title,
        CreationDate,
        OwnerDisplayName,
        TagCount,
        CommentCount,
        UpVoteCount,
        COALESCE(SUM(CASE WHEN bh.PostHistoryTypeId = 10 THEN 1 ELSE 0 END), 0) AS CloseCount,
        COALESCE(SUM(CASE WHEN bh.PostHistoryTypeId = 11 THEN 1 ELSE 0 END), 0) AS ReopenCount
    FROM 
        RecentPosts rp
    LEFT JOIN 
        PostHistory bh ON rp.PostId = bh.PostId
    GROUP BY 
        PostId, Title, CreationDate, OwnerDisplayName, TagCount, CommentCount, UpVoteCount
),
RankedPosts AS (
    SELECT 
        ps.*,
        RANK() OVER (ORDER BY UpVoteCount DESC, TagCount DESC, CommentCount DESC) AS Rank
    FROM 
        PostStatistics ps
)
SELECT 
    Rank,
    Title,
    CreationDate,
    OwnerDisplayName,
    TagCount,
    CommentCount,
    UpVoteCount,
    CloseCount,
    ReopenCount
FROM 
    RankedPosts
WHERE 
    Rank <= 10;
