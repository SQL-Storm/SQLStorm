
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.CreationDate,
        COUNT(a.Id) AS AnswerCount,
        COALESCE(SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END), 0) AS Upvotes,
        COALESCE(SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END), 0) AS Downvotes,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.CreationDate DESC) AS rn
    FROM 
        Posts p
    LEFT JOIN 
        Posts a ON p.Id = a.ParentId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    WHERE 
        p.PostTypeId = 1 
    GROUP BY 
        p.Id, p.Title, p.Body, p.CreationDate
),

TopPosts AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.Body,
        rp.CreationDate,
        rp.AnswerCount,
        rp.Upvotes,
        rp.Downvotes
    FROM 
        RankedPosts rp
    WHERE
        rp.rn = 1 
)

SELECT 
    p.PostId,
    p.Title,
    p.Body,
    p.CreationDate,
    p.AnswerCount,
    p.Upvotes,
    p.Downvotes,
    u.DisplayName AS Author,
    u.Reputation,
    CASE 
        WHEN p.Upvotes > p.Downvotes THEN 'Positive Engagement'
        WHEN p.Upvotes < p.Downvotes THEN 'Negative Engagement'
        ELSE 'Neutral Engagement'
    END AS EngagementType
FROM 
    TopPosts p
JOIN 
    Users u ON u.Id IN (SELECT AnsweredPostId FROM Posts WHERE ParentId = p.PostId)
WHERE 
    u.Id IS NOT NULL
ORDER BY 
    p.CreationDate DESC;
