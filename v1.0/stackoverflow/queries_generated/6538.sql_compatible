
WITH UserStatistics AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        u.Reputation,
        COUNT(DISTINCT p.Id) AS PostCount,
        SUM(CASE WHEN p.PostTypeId = 1 THEN 1 ELSE 0 END) AS QuestionCount,
        SUM(CASE WHEN p.PostTypeId = 2 THEN 1 ELSE 0 END) AS AnswerCount,
        SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END) AS UpVotes,
        SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END) AS DownVotes
    FROM 
        Users u
    LEFT JOIN 
        Posts p ON u.Id = p.OwnerUserId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    GROUP BY 
        u.Id, u.DisplayName, u.Reputation
),
QuestionDetails AS (
    SELECT 
        p.Id AS QuestionId,
        p.Title,
        p.CreationDate AS QuestionDate,
        EXTRACT(EPOCH FROM TIMESTAMP '2024-10-01 12:34:56' - p.CreationDate) / 3600 AS AgeInHours,
        COUNT(DISTINCT c.Id) AS CommentCount,
        COUNT(DISTINCT a.Id) AS AnswerCount
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Posts a ON p.Id = a.ParentId
    WHERE 
        p.PostTypeId = 1
    GROUP BY 
        p.Id, p.Title, p.CreationDate
),
TopUsers AS (
    SELECT 
        us.UserId,
        us.DisplayName,
        us.Reputation,
        us.PostCount,
        us.QuestionCount,
        us.AnswerCount,
        us.UpVotes,
        us.DownVotes,
        RANK() OVER (ORDER BY us.Reputation DESC) AS ReputationRank
    FROM 
        UserStatistics us
    WHERE 
        us.Reputation > 0
),
PopularQuestions AS (
    SELECT 
        q.QuestionId,
        q.Title,
        q.QuestionDate,
        q.AgeInHours,
        q.CommentCount,
        q.AnswerCount,
        COALESCE(u.DisplayName, 'Unknown') AS OwnerName
    FROM 
        QuestionDetails q
    LEFT JOIN 
        Users u ON u.Id IN (SELECT p.OwnerUserId FROM Posts p WHERE p.Id = q.QuestionId AND p.PostTypeId = 1)
    ORDER BY 
        q.AnswerCount DESC, q.CommentCount DESC
    LIMIT 
        10
)
SELECT 
    tu.DisplayName AS TopUser,
    tu.Reputation,
    tu.PostCount,
    pq.Title AS PopularQuestion,
    pq.CommentCount,
    pq.AnswerCount, 
    pq.AgeInHours,
    pq.OwnerName
FROM 
    TopUsers tu
JOIN 
    PopularQuestions pq ON tu.PostCount > 0
ORDER BY 
    tu.Reputation DESC, pq.AnswerCount DESC;
