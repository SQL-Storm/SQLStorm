
WITH RankedPostScores AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.ViewCount,
        COALESCE(SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END), 0) AS UpVotes,
        COALESCE(SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END), 0) AS DownVotes,
        RANK() OVER (ORDER BY COALESCE(SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END), 0) 
                    - COALESCE(SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END), 0) DESC) AS Rank
    FROM Posts p
    LEFT JOIN Votes v ON p.Id = v.PostId
    WHERE p.PostTypeId = 1
    GROUP BY p.Id, p.Title, p.ViewCount
), 
ClosedPosts AS (
    SELECT DISTINCT 
        ph.PostId,
        ph.CreationDate,
        ct.Name AS CloseReason
    FROM PostHistory ph
    JOIN CloseReasonTypes ct ON ph.Comment = CAST(ct.Id AS VARCHAR)
    WHERE ph.PostHistoryTypeId = 10
),
RecentUsers AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        u.Reputation,
        RANK() OVER (ORDER BY u.CreationDate DESC) AS RecentRank
    FROM Users u
    WHERE u.CreationDate >= TIMESTAMP '2024-10-01 12:34:56' - INTERVAL '1 year'
)
SELECT 
    r.Title,
    r.ViewCount,
    r.UpVotes,
    r.DownVotes,
    c.CloseReason,
    COALESCE(c.CreationDate, 'Not Closed') AS CloseDate,
    u.DisplayName AS RecentUser,
    u.Reputation
FROM RankedPostScores r
LEFT JOIN ClosedPosts c ON r.PostId = c.PostId
LEFT JOIN RecentUsers u ON r.Rank = u.RecentRank
WHERE r.Rank <= 10
ORDER BY r.Rank;
