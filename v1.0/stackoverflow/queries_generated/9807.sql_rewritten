SELECT 
    p.Title AS Post_Title,
    p.CreationDate AS Post_Creation_Date,
    u.DisplayName AS Owner_Display_Name,
    COUNT(c.Id) AS Total_Comments,
    SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END) AS Total_UpVotes,
    SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END) AS Total_DownVotes,
    GROUP_CONCAT(DISTINCT t.TagName SEPARATOR ', ') AS Associated_Tags,
    DATE_FORMAT(p.LastActivityDate, '%Y-%m') AS Month_Activity,
    GROUP_CONCAT(DISTINCT CONCAT(ph.Comment, ' (', ph.CreationDate, ')') SEPARATOR '; ') AS Edit_History
FROM 
    Posts p
JOIN 
    Users u ON p.OwnerUserId = u.Id
LEFT JOIN 
    Comments c ON p.Id = c.PostId
LEFT JOIN 
    Votes v ON p.Id = v.PostId
LEFT JOIN 
    Tags t ON FIND_IN_SET(t.Id, SUBSTRING_INDEX(SUBSTRING_INDEX(p.Tags, '<', -1), '>', 1))
LEFT JOIN 
    PostHistory ph ON p.Id = ph.PostId
WHERE 
    p.PostTypeId IN (1, 2) AND 
    p.CreationDate >= cast('2024-10-01 12:34:56' as timestamp) - INTERVAL 1 YEAR
GROUP BY 
    p.Id, u.DisplayName, Month_Activity
ORDER BY 
    Total_UpVotes DESC, Total_DownVotes ASC, Post_Creation_Date DESC
LIMIT 100;