
WITH RECURSIVE PostHierarchy AS (
    SELECT 
        Id,
        Title,
        ParentId,
        CreationDate,
        Score,
        1 AS Level
    FROM 
        Posts
    WHERE 
        ParentId IS NULL  
    UNION ALL
    SELECT 
        p.Id,
        p.Title,
        p.ParentId,
        p.CreationDate,
        p.Score,
        ph.Level + 1
    FROM 
        Posts p
    INNER JOIN 
        PostHierarchy ph ON p.ParentId = ph.Id
),
UserActivity AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        COUNT(DISTINCT p.Id) AS TotalPosts,
        SUM(CASE WHEN p.PostTypeId = 1 THEN 1 ELSE 0 END) AS QuestionCount,
        SUM(CASE WHEN p.PostTypeId = 2 THEN 1 ELSE 0 END) AS AnswerCount,
        MAX(p.CreationDate) AS LastPostDate
    FROM 
        Users u
    LEFT JOIN 
        Posts p ON u.Id = p.OwnerUserId
    GROUP BY 
        u.Id, u.DisplayName
),
RecentUpdates AS (
    SELECT 
        ph.Id AS PostId,
        ph.Title,
        ph.CreationDate,
        ROW_NUMBER() OVER (PARTITION BY ph.Id ORDER BY ph.CreationDate DESC) AS UpdateRank
    FROM 
        PostHistory ph
    WHERE 
        ph.PostHistoryTypeId IN (4, 5)  
),
PopularTags AS (
    SELECT 
        t.Id,
        t.TagName,
        COUNT(p.Id) AS PostCount
    FROM 
        Tags t
    LEFT JOIN 
        Posts p ON t.Id = ANY(string_to_array(p.Tags, ','))
    GROUP BY 
        t.Id
    HAVING 
        COUNT(p.Id) > 10  
)
SELECT 
    u.UserId,
    u.DisplayName,
    MAX(u.TotalPosts) AS TotalPosts,
    MAX(u.QuestionCount) AS Questions,
    MAX(u.AnswerCount) AS Answers,
    MAX(linked.PostCount) AS PopularTagPosts,
    ph.Title AS PostTitle,
    ph.CreationDate AS PostCreationDate
FROM 
    UserActivity u
LEFT JOIN 
    PopularTags linked ON u.UserId = linked.Id
LEFT JOIN 
    RecentUpdates ph ON u.UserId = ph.PostId
WHERE 
    u.LastPostDate > DATE '2024-10-01' - INTERVAL '30 days'  
    AND (u.Reputation > 100 OR u.TotalPosts > 50)  
GROUP BY 
    u.UserId, u.DisplayName, ph.Title, ph.CreationDate
ORDER BY 
    TotalPosts DESC, PopularTagPosts DESC
LIMIT 100;
