
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.Score,
        p.ViewCount,
        ROW_NUMBER() OVER (PARTITION BY p.PostTypeId ORDER BY p.Score DESC) AS Rank,
        COUNT(DISTINCT c.Id) AS CommentCount,
        SUM(v.BountyAmount) AS TotalBounty
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId AND v.VoteTypeId = 8  
    WHERE 
        p.CreationDate >= CURRENT_DATE - INTERVAL '1 year'  
    GROUP BY 
        p.Id, p.Title, p.CreationDate, p.Score, p.ViewCount, p.PostTypeId
),
TopQuestions AS (
    SELECT 
        PostId,
        Title,
        CreationDate,
        Score,
        ViewCount,
        CommentCount,
        TotalBounty
    FROM 
        RankedPosts
    WHERE 
        Rank <= 10  
        AND PostTypeId = 1
),
HighestViewCounts AS (
    SELECT 
        PostId,
        ViewCount
    FROM 
        RankedPosts
    WHERE 
        ViewCount IS NOT NULL
    ORDER BY 
        ViewCount DESC
    LIMIT 5  
),
BadgeSummary AS (
    SELECT 
        u.Id AS UserId,
        COUNT(b.Id) AS BadgeCount,
        MAX(b.Class) AS HighestBadgeClass
    FROM 
        Users u
    LEFT JOIN 
        Badges b ON u.Id = b.UserId
    GROUP BY 
        u.Id
),
PostHistorySummary AS (
    SELECT 
        p.Id AS PostId,
        COUNT(ph.Id) AS EditCount,
        MAX(ph.CreationDate) AS LastEditDate
    FROM 
        Posts p
    LEFT JOIN 
        PostHistory ph ON p.Id = ph.PostId AND ph.PostHistoryTypeId IN (4, 5)  
    GROUP BY 
        p.Id
)

SELECT 
    q.PostId,
    q.Title,
    q.CreationDate,
    q.Score,
    q.ViewCount,
    q.CommentCount,
    q.TotalBounty,
    u.DisplayName AS OwnerDisplayName,
    COALESCE(b.BadgeCount, 0) AS UserBadgeCount,
    COALESCE(b.HighestBadgeClass, 0) AS UserHighestBadgeClass,
    ph.EditCount,
    ph.LastEditDate,
    COALESCE(hvc.ViewCount, 0) AS HighestViewCount
FROM 
    TopQuestions q
JOIN 
    Users u ON q.PostId = u.Id
LEFT JOIN 
    BadgeSummary b ON u.Id = b.UserId
LEFT JOIN 
    PostHistorySummary ph ON q.PostId = ph.PostId
LEFT JOIN 
    HighestViewCounts hvc ON q.PostId = hvc.PostId
ORDER BY 
    q.Score DESC, 
    q.CreationDate DESC;
