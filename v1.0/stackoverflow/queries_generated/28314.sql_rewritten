WITH RankedPosts AS (
    SELECT 
        p.Id AS PostID,
        p.Title,
        p.ViewCount,
        p.CreationDate,
        p.OwnerUserId,
        u.DisplayName AS OwnerDisplayName,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.ViewCount DESC) AS RankByViews
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    WHERE 
        p.PostTypeId = 1 
        AND p.CreationDate >= DATEADD(year, -2, GETDATE()) 
),
TagsWithCompletions AS (
    SELECT 
        t.TagName,
        COUNT(pt.PostId) AS TotalPosts,
        STRING_AGG(DISTINCT p.Title, ', ') AS RelatedPostTitles
    FROM 
        Tags t
    JOIN 
        Posts p ON p.Tags LIKE '%' + t.TagName + '%'
    JOIN 
        PostTypes pt ON p.PostTypeId = pt.Id
    WHERE 
        pt.Name = 'Question' 
    GROUP BY 
        t.TagName
)
SELECT 
    rp.PostID,
    rp.Title AS QuestionTitle,
    rp.ViewCount,
    rp.CreationDate,
    rp.OwnerDisplayName,
    twc.TagName AS MostRelatedTag,
    twc.TotalPosts AS RelatedPostCount,
    twc.RelatedPostTitles
FROM 
    RankedPosts rp
LEFT JOIN 
    (
        SELECT 
            t.TagName,
            p.Id AS PostId,
            COUNT(*) OVER (PARTITION BY t.TagName) AS TotalPosts,
            STRING_AGG(p.Title, ', ') OVER (PARTITION BY t.TagName) AS RelatedPostTitles
        FROM 
            Tags t
        JOIN 
            Posts p ON p.Tags LIKE '%' + t.TagName + '%'
    ) twc ON rp.PostID = twc.PostId
WHERE 
    rp.RankByViews <= 5 
ORDER BY 
    rp.OwnerDisplayName, rp.ViewCount DESC;