
SELECT 
    pt.Name AS PostType,
    COUNT(DISTINCT p.Id) AS NumberOfPosts,
    COUNT(c.Id) AS NumberOfComments,
    AVG(COALESCE(c.CommentCount, 0)) AS AvgCommentsPerPost
FROM 
    PostTypes pt
LEFT JOIN 
    Posts p ON p.PostTypeId = pt.Id
LEFT JOIN 
    Comments c ON c.PostId = p.Id
GROUP BY 
    pt.Name
ORDER BY 
    NumberOfPosts DESC;
