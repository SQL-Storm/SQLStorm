WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.CreationDate,
        p.ViewCount,
        u.DisplayName AS Author,
        ARRAY_AGG(t.TagName) AS Tags,
        P.HistoryEditCount,
        ROW_NUMBER() OVER (ORDER BY p.CreationDate DESC) AS RecentRank
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    LEFT JOIN 
        Tags t ON t.Id IN (SELECT UNNEST(string_to_array(substring(p.Tags, 2, length(p.Tags) - 2), '><'))::int)
        )
    LEFT JOIN (
        SELECT 
            PostId, 
            COUNT(Id) AS HistoryEditCount
        FROM 
            PostHistory 
        GROUP BY 
            PostId
    ) AS P ON p.Id = P.PostId
    WHERE 
        p.PostTypeId = 1 
    GROUP BY 
        p.Id, p.Title, p.Body, p.CreationDate, p.ViewCount, u.DisplayName, P.HistoryEditCount
),
PopularTags AS (
    SELECT 
        t.TagName,
        COUNT(p.Id) AS PostCount
    FROM 
        Tags t
    JOIN 
        Posts p ON t.Id IN (SELECT UNNEST(string_to_array(substring(p.Tags, 2, length(p.Tags) - 2), '><'))::int)
        )
    GROUP BY 
        t.TagName
    ORDER BY 
        PostCount DESC
    LIMIT 5
)
SELECT 
    rp.PostId,
    rp.Title,
    rp.Body,
    rp.CreationDate,
    rp.ViewCount,
    rp.Author,
    rp.Tags,
    rp.RecentRank,
    pt.TagName AS PopularTag,
    pt.PostCount AS PopularTagPostCount
FROM 
    RankedPosts rp
CROSS JOIN 
    PopularTags pt
WHERE 
    rp.RecentRank <= 100 
ORDER BY 
    rp.RecentRank, pt.PostCount DESC;