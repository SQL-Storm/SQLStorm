WITH UserActivity AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        COUNT(DISTINCT p.Id) AS PostsCount,
        SUM(COALESCE(v.VoteTypeId = 2, 0)) AS UpVotesCount,
        SUM(COALESCE(v.VoteTypeId = 3, 0)) AS DownVotesCount,
        SUM(CASE 
                WHEN p.PostTypeId = 1 THEN p.AnswerCount 
                ELSE 0 
            END) AS AcceptedAnswersCount,
        AVG(EXTRACT(EPOCH FROM (cast('2024-10-01 12:34:56' as timestamp) - p.CreationDate)) / 3600) AS AvgPostAgeInHours
    FROM 
        Users u
    LEFT JOIN 
        Posts p ON u.Id = p.OwnerUserId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    GROUP BY 
        u.Id, u.DisplayName
), 
PostStatistics AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Score,
        p.ViewCount,
        p.CreationDate,
        COUNT(c.Id) AS CommentCount,
        SUM(CASE WHEN p.AcceptedAnswerId IS NOT NULL THEN 1 ELSE 0 END) AS HasAcceptedAnswer,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.CreationDate DESC) AS UserPostRank
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    GROUP BY 
        p.Id, p.Title, p.Score, p.ViewCount, p.CreationDate
), 
ClosedPosts AS (
    SELECT 
        ph.PostId,
        STRING_AGG(CASE WHEN ph.PostHistoryTypeId = 10 THEN cr.Name END, ', ') AS CloseReasons
    FROM 
        PostHistory ph
    JOIN 
        CloseReasonTypes cr ON ph.Comment::int = cr.Id
    WHERE 
        ph.PostHistoryTypeId IN (10, 11)  
    GROUP BY 
        ph.PostId
)
SELECT 
    ua.UserId,
    ua.DisplayName,
    ua.PostsCount,
    ua.UpVotesCount,
    ua.DownVotesCount,
    ua.AcceptedAnswersCount,
    ua.AvgPostAgeInHours,
    ps.PostId,
    ps.Title,
    ps.Score,
    ps.ViewCount,
    ps.CommentCount,
    ps.HasAcceptedAnswer,
    cp.CloseReasons
FROM 
    UserActivity ua
JOIN 
    PostStatistics ps ON ua.UserId = ps.UserId
LEFT OUTER JOIN 
    ClosedPosts cp ON ps.PostId = cp.PostId
WHERE 
    ua.PostsCount > 5 
    AND ua.UpVotesCount - ua.DownVotesCount > 0 
    AND (ps.HasAcceptedAnswer = 1 OR ps.CommentCount > 5)
ORDER BY 
    ua.PostsCount DESC, ua.UpVotesCount DESC, ua.AvgPostAgeInHours ASC;