
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Score,
        p.CreationDate,
        p.ViewCount,
        p.AnswerCount,
        p.CommentCount,
        u.DisplayName AS OwnerDisplayName,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.Score DESC, p.CreationDate DESC) AS PostRank,
        p.Tags
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    WHERE 
        p.PostTypeId = 1 
        AND p.CreationDate >= '2023-01-01' 
),
PopularTags AS (
    SELECT 
        tag AS TagName,
        COUNT(*) AS TagCount
    FROM (
        SELECT 
            TRIM(tag) AS tag
        FROM 
            Posts p,
            UNNEST(string_to_array(p.Tags, '>')) AS tag
        WHERE 
            p.PostTypeId = 1
    ) AS tags
    GROUP BY 
        tag
    ORDER BY 
        TagCount DESC
    LIMIT 10
),
UserBadges AS (
    SELECT 
        u.Id AS UserId,
        COUNT(b.Id) AS BadgeCount
    FROM 
        Users u
    LEFT JOIN 
        Badges b ON u.Id = b.UserId
    WHERE 
        u.Reputation > 1000 
    GROUP BY 
        u.Id
)
SELECT 
    rp.PostId,
    rp.Title,
    rp.Score,
    rp.ViewCount,
    rp.AnswerCount,
    rp.CommentCount,
    rp.CreationDate,
    rp.OwnerDisplayName,
    pt.TagName,
    ub.BadgeCount
FROM 
    RankedPosts rp
JOIN 
    UserBadges ub ON rp.OwnerUserId = ub.UserId
JOIN 
    PopularTags pt ON pt.TagName IN (SELECT TRIM(tag) FROM UNNEST(string_to_array(rp.Tags, '>')) AS tag)
WHERE 
    rp.PostRank <= 5 
ORDER BY 
    rp.OwnerDisplayName, rp.Score DESC;
