
SELECT 
    P.Title,
    P.Score,
    U.DisplayName AS OwnerDisplayName,
    COALESCE(C.CommentCount, 0) AS CommentCount,
    T.TagName
FROM 
    Posts P
JOIN 
    Users U ON P.OwnerUserId = U.Id
LEFT JOIN 
    (SELECT 
         PostId, 
         COUNT(*) AS CommentCount 
     FROM 
         Comments 
     GROUP BY 
         PostId) C ON P.Id = C.PostId
LEFT JOIN 
    (SELECT 
         P.Id AS PostId,
         STRING_AGG(T.TagName, ', ') AS TagName
     FROM 
         Posts P 
     JOIN 
         Tags T ON P.Tags LIKE '%' || T.TagName || '%'
     GROUP BY 
         P.Id) T ON P.Id = T.PostId
WHERE 
    P.PostTypeId = 1
GROUP BY 
    P.Title, 
    P.Score, 
    U.DisplayName, 
    C.CommentCount, 
    T.TagName
ORDER BY 
    P.CreationDate DESC
LIMIT 10;
