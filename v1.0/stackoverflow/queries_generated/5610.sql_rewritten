WITH UserPostActivity AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        COUNT(p.Id) AS PostCount,
        SUM(CASE WHEN p.PostTypeId = 1 THEN 1 ELSE 0 END) AS QuestionCount,
        SUM(CASE WHEN p.PostTypeId = 2 THEN 1 ELSE 0 END) AS AnswerCount,
        SUM(CASE WHEN p.LastActivityDate >= cast('2024-10-01 12:34:56' as timestamp) - INTERVAL '1 month' THEN 1 ELSE 0 END) AS ActivePosts
    FROM 
        Users u
    LEFT JOIN 
        Posts p ON u.Id = p.OwnerUserId
    WHERE 
        u.Reputation >= 100
    GROUP BY 
        u.Id
),
TopContributors AS (
    SELECT 
        UserId,
        DisplayName,
        PostCount,
        QuestionCount,
        AnswerCount,
        ActivePosts,
        RANK() OVER (ORDER BY PostCount DESC) AS Rank
    FROM 
        UserPostActivity
    WHERE 
        PostCount > 0
),
PostDetails AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.ViewCount,
        COALESCE(c.UserDisplayName, 'N/A') AS LastCommentUser,
        MAX(c.CreationDate) AS LastCommentDate
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    GROUP BY 
        p.Id, p.Title, p.ViewCount
)
SELECT 
    tc.DisplayName AS Contributor,
    tc.PostCount,
    tc.QuestionCount,
    tc.AnswerCount,
    pd.PostId,
    pd.Title,
    pd.ViewCount,
    pd.LastCommentUser,
    pd.LastCommentDate
FROM 
    TopContributors tc
JOIN 
    PostDetails pd ON pd.ViewCount > 100
ORDER BY 
    tc.Rank, pd.ViewCount DESC
LIMIT 50;