
WITH RecentPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.ViewCount,
        COALESCE(SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END), 0) AS UpVotes,
        COALESCE(SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END), 0) AS DownVotes,
        (
            SELECT COUNT(*)
            FROM Comments c
            WHERE c.PostId = p.Id
        ) AS CommentCount,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.CreationDate DESC) AS PostRank
    FROM 
        Posts p
        LEFT JOIN Votes v ON p.Id = v.PostId
    WHERE 
        p.CreationDate >= CAST('2024-10-01 12:34:56' AS TIMESTAMP) - INTERVAL '30 days'
    GROUP BY 
        p.Id, p.Title, p.CreationDate, p.ViewCount, p.OwnerUserId
),
TopUsers AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        RANK() OVER (ORDER BY SUM(COALESCE(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END, 0)) DESC) AS VoteRank
    FROM 
        Users u
        JOIN Posts p ON u.Id = p.OwnerUserId
        LEFT JOIN Votes v ON p.Id = v.PostId AND (v.VoteTypeId = 2 OR v.VoteTypeId = 3)
    GROUP BY 
        u.Id, u.DisplayName
),
PostDetails AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.CreationDate,
        rp.ViewCount,
        rp.UpVotes,
        rp.DownVotes,
        rp.CommentCount,
        tu.DisplayName AS OwnerName,
        tu.VoteRank
    FROM 
        RecentPosts rp
        JOIN TopUsers tu ON rp.PostRank = 1 
),
CombinedScores AS (
    SELECT 
        pd.*,
        (pd.UpVotes - pd.DownVotes) AS EngagementScore,
        CASE 
            WHEN pd.ViewCount IS NULL THEN 'Unknown Views'
            ELSE FORMAT(pd.ViewCount, 'N0')
        END AS FormattedViews
    FROM 
        PostDetails pd
)
SELECT 
    cs.PostId,
    cs.Title,
    cs.OwnerName,
    cs.CreationDate,
    cs.ViewCount,
    cs.FormattedViews,
    cs.EngagementScore,
    CASE 
        WHEN cs.VoteRank = 1 THEN 'Top Contributor'
        WHEN cs.VoteRank IS NULL THEN 'No Votes Registered'
        ELSE 'Contributor'
    END AS UserType
FROM 
    CombinedScores cs
WHERE 
    cs.EngagementScore > 0
ORDER BY 
    cs.EngagementScore DESC
LIMIT 10;
