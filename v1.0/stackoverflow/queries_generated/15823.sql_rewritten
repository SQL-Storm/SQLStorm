SELECT
    P.Id AS PostId,
    P.Title,
    U.DisplayName AS OwnerDisplayName,
    P.CreationDate,
    P.Score,
    C.CommentCount,
    V.ViewCount
FROM
    Posts P
JOIN
    Users U ON P.OwnerUserId = U.Id
LEFT JOIN
    Comments C ON P.Id = C.PostId
LEFT JOIN
    (SELECT PostId, COUNT(*) AS ViewCount FROM Posts GROUP BY PostId) V ON P.Id = V.PostId
WHERE
    P.PostTypeId = 1 
ORDER BY
    P.CreationDate DESC
LIMIT 10;