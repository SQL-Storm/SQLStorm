WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.CreationDate,
        p.Score,
        p.ViewCount,
        p.Tags,
        u.DisplayName AS OwnerDisplayName,
        ROW_NUMBER() OVER (PARTITION BY STRING_AGG(TRIM(BOTH '<>' FROM unnest(string_to_array(p.Tags, '>'))) ORDER BY p.ViewCount DESC) ORDER BY p.Score DESC) AS TagRank
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    WHERE 
        p.PostTypeId = 1 
        AND p.CreationDate >= cast('2024-10-01 12:34:56' as timestamp) - INTERVAL '1 year' 
),

TopTags AS (
    SELECT 
        TRIM(BOTH '<>' FROM unnest(string_to_array(Tags, '>'))) AS Tag,
        COUNT(*) AS PostCount
    FROM 
        RankedPosts
    GROUP BY 
        Tag
    HAVING 
        COUNT(*) > 5  
),

TopPosts AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.OwnerDisplayName,
        rp.Score,
        rp.ViewCount,
        ARRAY_AGG(tt.Tag) AS RelatedTags
    FROM 
        RankedPosts rp
    JOIN 
        TopTags tt ON tt.Tag = ANY(string_to_array(rp.Tags, '>'))
    WHERE 
        rp.TagRank <= 10  
    GROUP BY 
        rp.PostId, 
        rp.Title,
        rp.OwnerDisplayName,
        rp.Score,
        rp.ViewCount
)

SELECT 
    tp.PostId,
    tp.Title,
    tp.OwnerDisplayName,
    tp.Score,
    tp.ViewCount,
    tp.RelatedTags,
    COALESCE(CAST(ROUND(AVG(v.BountyAmount), 2) AS VARCHAR), 'No Bounties') AS AverageBounty
FROM 
    TopPosts tp
LEFT JOIN 
    Votes v ON tp.PostId = v.PostId AND v.VoteTypeId = 8 
ORDER BY 
    tp.Score DESC, 
    tp.ViewCount DESC
LIMIT 50;