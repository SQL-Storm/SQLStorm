SELECT 
    P.Id AS PostId,
    P.Title,
    U.DisplayName AS OwnerDisplayName,
    COUNT(C.Id) AS CommentCount,
    COALESCE(SUM(VoteValue), 0) AS TotalVotes,
    (SELECT COUNT(*) FROM PostHistory PH WHERE PH.PostId = P.Id) AS HistoryCount,
    (SELECT COUNT(*) FROM Badges B WHERE B.UserId = U.Id) AS BadgeCount
FROM 
    Posts P
LEFT JOIN 
    Users U ON P.OwnerUserId = U.Id
LEFT JOIN 
    Comments C ON P.Id = C.PostId
LEFT JOIN 
    (SELECT 
         PostId,
         SUM(CASE WHEN VoteTypeId = 2 THEN 1 
                  WHEN VoteTypeId = 3 THEN -1 
                  ELSE 0 END) AS VoteValue
     FROM 
         Votes 
     GROUP BY 
         PostId) V ON P.Id = V.PostId
WHERE 
    P.PostTypeId = 1 
GROUP BY 
    P.Id, P.Title, U.DisplayName
ORDER BY 
    TotalVotes DESC, CommentCount DESC
LIMIT 100;