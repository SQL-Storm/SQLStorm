
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.Score,
        p.ViewCount,
        p.OwnerUserId,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.CreationDate DESC) AS UserRank
    FROM 
        Posts p
    WHERE 
        p.PostTypeId = 1 
        AND p.CreationDate >= CURRENT_DATE - INTERVAL '1 year'
),
PostStats AS (
    SELECT 
        r.OwnerUserId,
        COUNT(*) AS TotalQuestions,
        AVG(r.Score) AS AvgScore,
        SUM(r.ViewCount) AS TotalViews
    FROM 
        RankedPosts r
    GROUP BY 
        r.OwnerUserId
),
TopUsers AS (
    SELECT 
        u.DisplayName,
        ps.TotalQuestions,
        ps.AvgScore,
        ps.TotalViews,
        RANK() OVER (ORDER BY ps.TotalQuestions DESC) AS UserRank
    FROM 
        Users u
    JOIN 
        PostStats ps ON u.Id = ps.OwnerUserId
    WHERE 
        u.Reputation > 1000 
),
MostActiveUsers AS (
    SELECT 
        u.DisplayName, 
        COUNT(c.Id) AS CommentCount
    FROM 
        Users u
    LEFT JOIN 
        Comments c ON u.Id = c.UserId
    WHERE 
        c.CreationDate >= CURRENT_DATE - INTERVAL '6 months' 
    GROUP BY 
        u.DisplayName
), 
UserBadges AS (
    SELECT 
        b.UserId,
        STRING_AGG(b.Name, ', ') AS BadgeNames
    FROM 
        Badges b
    GROUP BY 
        b.UserId
)

SELECT 
    tu.DisplayName,
    tu.TotalQuestions,
    tu.AvgScore,
    tu.TotalViews,
    COALESCE(mab.CommentCount, 0) AS RecentCommentCount,
    ub.BadgeNames
FROM 
    TopUsers tu
LEFT JOIN 
    MostActiveUsers mab ON tu.DisplayName = mab.DisplayName
LEFT JOIN 
    UserBadges ub ON tu.OwnerUserId = ub.UserId
WHERE 
    tu.UserRank <= 10 
ORDER BY 
    tu.TotalQuestions DESC;
