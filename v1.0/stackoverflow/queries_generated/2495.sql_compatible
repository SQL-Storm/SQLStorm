
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        u.DisplayName AS OwnerName,
        p.CreationDate,
        p.Score,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.CreationDate DESC) AS PostRank
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    WHERE 
        p.CreationDate > TIMESTAMP '2024-10-01 12:34:56' - INTERVAL '1 year'
),
TopPosts AS (
    SELECT 
        PostId,
        Title,
        OwnerName,
        CreationDate,
        Score
    FROM 
        RankedPosts
    WHERE 
        PostRank = 1
),
CommentStats AS (
    SELECT 
        PostId,
        COUNT(*) AS CommentCount,
        MAX(Score) AS MaxCommentScore
    FROM 
        Comments
    GROUP BY 
        PostId
),
PostClosureReasons AS (
    SELECT 
        ph.PostId,
        MAX(CASE WHEN ph.PostHistoryTypeId = 10 THEN cr.Name END) AS CloseReason,
        MAX(CASE WHEN ph.PostHistoryTypeId = 11 THEN 'Reopened' END) AS ReopenStatus
    FROM 
        PostHistory ph
    LEFT JOIN 
        CloseReasonTypes cr ON ph.Comment = cr.Id
    GROUP BY 
        ph.PostId
)
SELECT 
    tp.PostId,
    tp.Title,
    tp.OwnerName,
    tp.CreationDate,
    tp.Score,
    COALESCE(cs.CommentCount, 0) AS TotalComments,
    COALESCE(cs.MaxCommentScore, 0) AS MaxCommentScore,
    pcr.CloseReason,
    pcr.ReopenStatus
FROM 
    TopPosts tp
LEFT JOIN 
    CommentStats cs ON tp.PostId = cs.PostId
LEFT JOIN 
    PostClosureReasons pcr ON tp.PostId = pcr.PostId
WHERE 
    tp.Score > 0
ORDER BY 
    tp.Score DESC, tp.CreationDate DESC;
