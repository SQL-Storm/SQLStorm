
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Score,
        p.CreationDate,
        p.ViewCount,
        ROW_NUMBER() OVER (PARTITION BY p.PostTypeId ORDER BY p.Score DESC) AS Rank,
        COUNT(c.Id) AS CommentCount,
        SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END) AS UpVoteCount,
        SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END) AS DownVoteCount
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    WHERE 
        p.CreationDate >= CURRENT_DATE - INTERVAL '1 year'
      AND 
        p.ViewCount IS NOT NULL
    GROUP BY 
        p.Id, p.Title, p.Score, p.CreationDate, p.ViewCount, p.PostTypeId
),
ClosedPosts AS (
    SELECT 
        ph.PostId,
        MAX(ph.CreationDate) AS LastClosedDate
    FROM 
        PostHistory ph
    WHERE 
        ph.PostHistoryTypeId IN (10, 11) 
    GROUP BY 
        ph.PostId
),
PostStats AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.Score,
        rp.CommentCount,
        rp.ViewCount,
        rp.Rank,
        CASE 
            WHEN cp.LastClosedDate IS NOT NULL AND cp.LastClosedDate > CURRENT_DATE - INTERVAL '3 months' THEN 'Recently Closed'
            ELSE 'Active'
        END AS PostStatus
    FROM 
        RankedPosts rp
    LEFT JOIN 
        ClosedPosts cp ON rp.PostId = cp.PostId
)
SELECT 
    ps.PostId,
    ps.Title,
    ps.Score,
    ps.CommentCount,
    ps.ViewCount,
    ps.Rank,
    ps.PostStatus,
    STRING_AGG(DISTINCT t.TagName, ', ') AS Tags
FROM 
    PostStats ps
LEFT JOIN 
    Posts p ON ps.PostId = p.Id
LEFT JOIN 
    LATERAL STRING_TO_ARRAY(p.Tags, ',') AS tag_list ON TRUE
LEFT JOIN 
    Tags t ON tag_list = t.TagName
WHERE 
    ps.Rank <= 10 
GROUP BY 
    ps.PostId, ps.Title, ps.Score, ps.CommentCount, ps.ViewCount, ps.Rank, ps.PostStatus
HAVING 
    COUNT(t.Id) > 0 OR ps.PostStatus = 'Recently Closed'
ORDER BY 
    ps.Rank, ps.Score DESC;
