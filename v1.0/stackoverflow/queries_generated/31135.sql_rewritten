WITH RankedPosts AS (
    SELECT
        p.Id,
        p.Title,
        p.Score,
        p.ViewCount,
        p.CreationDate,
        p.AnswerCount,
        p.Tags,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.Score DESC, p.CreationDate DESC) AS RowNum
    FROM Posts p
    WHERE p.PostTypeId = 1 
        AND p.Score > 0
        AND p.CreationDate >= DATEADD(year, -1, GETDATE()) 
),
PopularTags AS (
    SELECT
        t.TagName,
        COUNT(pt.PostId) AS TagCount
    FROM Tags t
    JOIN Posts p ON p.Tags LIKE '%' + t.TagName + '%'
    JOIN PostTypes pt ON p.PostTypeId = pt.Id
    WHERE pt.Name = 'Question'
    GROUP BY t.TagName
    HAVING COUNT(pt.PostId) > 5 
),
UserStats AS (
    SELECT
        u.Id AS UserId,
        u.DisplayName,
        u.Reputation,
        COALESCE(SUM(v.BountyAmount), 0) AS TotalBounties,
        COUNT(DISTINCT b.Id) AS BadgeCount
    FROM Users u
    LEFT JOIN Votes v ON u.Id = v.UserId
    LEFT JOIN Badges b ON u.Id = b.UserId
    GROUP BY u.Id, u.DisplayName, u.Reputation
),
CommentStats AS (
    SELECT
        c.PostId,
        COUNT(c.Id) AS CommentCount
    FROM Comments c
    GROUP BY c.PostId
),
PostHistoryData AS (
    SELECT
        ph.PostId,
        STRING_AGG(ph.Comment, ', ') AS EditComments
    FROM PostHistory ph
    WHERE ph.PostHistoryTypeId IN (4, 5, 6) 
    GROUP BY ph.PostId
)
SELECT
    rp.Title,
    rp.Score,
    rp.ViewCount,
    rp.CreationDate,
    rp.AnswerCount,
    STRING_AGG(pt.TagName, ', ') AS PopularTags,
    us.DisplayName AS Owner,
    us.Reputation,
    us.TotalBounties,
    ps.CommentCount,
    COALESCE(phd.EditComments, 'No recent edits') AS RecentEdits
FROM RankedPosts rp
JOIN Users us ON rp.OwnerUserId = us.Id
JOIN PopularTags pt ON rp.Tags LIKE '%' + pt.TagName + '%'
LEFT JOIN CommentStats ps ON rp.Id = ps.PostId
LEFT JOIN PostHistoryData phd ON rp.Id = phd.PostId
WHERE rp.RowNum = 1 
GROUP BY 
    rp.Title, 
    rp.Score, 
    rp.ViewCount, 
    rp.CreationDate, 
    rp.AnswerCount,
    us.DisplayName,
    us.Reputation,
    us.TotalBounties,
    ps.CommentCount,
    phd.EditComments
ORDER BY rp.Score DESC, rp.ViewCount DESC;