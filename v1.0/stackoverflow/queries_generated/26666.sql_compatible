
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.CreationDate,
        u.DisplayName AS OwnerDisplayName,
        COUNT(c.Id) AS CommentCount,
        COUNT(DISTINCT v.Id) AS VoteCount,
        ROW_NUMBER() OVER (PARTITION BY p.Id ORDER BY p.CreationDate DESC) AS rn
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId AND v.VoteTypeId = 2 
    LEFT JOIN 
        Users u ON p.OwnerUserId = u.Id
    WHERE 
        p.PostTypeId = 1 
    GROUP BY 
        p.Id, p.Title, p.Body, p.CreationDate, u.DisplayName
),
FilteredPosts AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.Body,
        rp.CreationDate,
        rp.OwnerDisplayName,
        rp.CommentCount,
        rp.VoteCount
    FROM 
        RankedPosts rp
    WHERE 
        rp.rn = 1  
        AND rp.VoteCount > 5 
)
SELECT 
    fp.PostId,
    fp.Title,
    fp.Body,
    fp.CreationDate,
    fp.OwnerDisplayName,
    fp.CommentCount,
    fp.VoteCount,
    tag.TagName AS PopularTag,
    DATEDIFF(CAST('2024-10-01 12:34:56' AS TIMESTAMP), fp.CreationDate) AS DaysSincePosted
FROM 
    FilteredPosts fp
LEFT JOIN 
    (SELECT 
        p.Id,
        p.Tags,
        UNNEST(string_to_array(SUBSTRING(p.Tags FROM 2 FOR LENGTH(p.Tags) - 2), '><')) AS TagName
    FROM 
        Posts p 
    WHERE 
        p.Tags IS NOT NULL) AS tag ON fp.PostId = tag.Id
WHERE 
    tag.TagName IN ('SQL', 'PostgreSQL', 'Database') 
ORDER BY 
    fp.VoteCount DESC,
    fp.CreationDate DESC
LIMIT 20;
