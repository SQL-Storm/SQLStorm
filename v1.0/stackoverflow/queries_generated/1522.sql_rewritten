WITH UserStats AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        u.Reputation,
        COUNT(DISTINCT p.Id) AS PostCount,
        SUM(CASE WHEN p.PostTypeId = 2 THEN 1 ELSE 0 END) AS AnswerCount,
        SUM(v.BountyAmount) AS TotalBounties
    FROM Users u
    LEFT JOIN Posts p ON u.Id = p.OwnerUserId
    LEFT JOIN Votes v ON p.Id = v.PostId AND v.VoteTypeId IN (8,9) 
    WHERE u.Reputation > 100
    GROUP BY u.Id
),
PopularPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.ViewCount,
        ROW_NUMBER() OVER (PARTITION BY p.PostTypeId ORDER BY p.ViewCount DESC) AS Rank
    FROM Posts p
    WHERE p.CreationDate >= cast('2024-10-01 12:34:56' as timestamp) - INTERVAL '1 year'
),
ClosedPosts AS (
    SELECT 
        ph.PostId,
        ph.CreationDate,
        COUNT(ph.Id) AS CloseCount
    FROM PostHistory ph
    WHERE ph.PostHistoryTypeId = 10 
    GROUP BY ph.PostId, ph.CreationDate
),
UserPostDetails AS (
    SELECT 
        us.UserId,
        us.DisplayName,
        us.Reputation,
        pp.PostId,
        COALESCE(pp.Title, 'No Title') AS Title,
        COALESCE(pp.ViewCount, 0) AS ViewCount,
        COALESCE(cp.CloseCount, 0) AS CloseCount
    FROM UserStats us
    LEFT JOIN PopularPosts pp ON us.PostCount > 0
    LEFT JOIN ClosedPosts cp ON pp.PostId = cp.PostId
    WHERE us.PostCount > 0
)
SELECT 
    up.DisplayName,
    up.Reputation,
    up.Title,
    up.ViewCount,
    up.CloseCount,
    CASE 
        WHEN up.CloseCount > 0 THEN 'Closed'
        ELSE 'Open'
    END AS PostStatus,
    up.Reputation * up.CloseCount AS ReputationImpact
FROM UserPostDetails up
WHERE up.ReputationImpact > 0 
ORDER BY ReputationImpact DESC
LIMIT 10;