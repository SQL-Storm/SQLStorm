
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        COALESCE(SUM(CASE WHEN vt.Id = 2 THEN 1 ELSE 0 END) OVER (PARTITION BY p.Id), 0) AS UpVotes, 
        COALESCE(SUM(CASE WHEN vt.Id = 3 THEN 1 ELSE 0 END) OVER (PARTITION BY p.Id), 0) AS DownVotes,
        COALESCE(SUM(CASE WHEN ph.PostHistoryTypeId = 10 THEN 1 ELSE 0 END) OVER (PARTITION BY p.Id), 0) AS CloseCount,
        ROW_NUMBER() OVER (ORDER BY COALESCE(SUM(CASE WHEN vt.Id = 2 THEN 1 ELSE 0 END), 0) - COALESCE(SUM(CASE WHEN vt.Id = 3 THEN 1 ELSE 0 END), 0) DESC) AS rnk
    FROM 
        Posts p
    LEFT JOIN 
        Votes vt ON p.Id = vt.PostId
    LEFT JOIN 
        PostHistory ph ON p.Id = ph.PostId
    WHERE 
        (p.PostTypeId = 1 OR p.PostTypeId = 2)  
        AND p.CreationDate >= '2024-10-01 12:34:56' - INTERVAL '1 year'
    GROUP BY 
        p.Id, p.Title, p.CreationDate
),
BadgedUsers AS (
    SELECT 
        u.Id AS UserId,
        COUNT(b.Id) FILTER (WHERE b.Class = 1) AS GoldBadgeCount,
        COUNT(b.Id) FILTER (WHERE b.Class IN (2, 3)) AS SilverBronzeBadgeCount
    FROM 
        Users u
    LEFT JOIN 
        Badges b ON u.Id = b.UserId
    GROUP BY 
        u.Id
),
TopUsers AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        u.Reputation,
        ROW_NUMBER() OVER (ORDER BY u.Reputation DESC) AS UserRank
    FROM 
        Users u
    WHERE 
        u.Reputation > (SELECT AVG(Reputation) FROM Users)
),
PostCloseReasons AS (
    SELECT 
        ph.PostId,
        STRING_AGG(cr.Name, ', ') AS CloseReasons
    FROM 
        PostHistory ph
    INNER JOIN 
        CloseReasonTypes cr ON CAST(ph.Comment AS INTEGER) = cr.Id 
    WHERE 
        ph.PostHistoryTypeId IN (10, 11) 
    GROUP BY 
        ph.PostId
)
SELECT 
    rp.PostId,
    rp.Title,
    rp.UpVotes,
    rp.DownVotes,
    rp.CloseCount,
    bu.GoldBadgeCount,
    bu.SilverBronzeBadgeCount,
    tu.DisplayName AS TopUserName,
    tu.Reputation AS TopUserReputation,
    pcr.CloseReasons
FROM 
    RankedPosts rp
LEFT JOIN 
    BadgedUsers bu ON bu.UserId = rp.UpVotes 
LEFT JOIN 
    TopUsers tu ON tu.UserId = rp.PostId  
LEFT JOIN 
    PostCloseReasons pcr ON pcr.PostId = rp.PostId
WHERE 
    rp.rnk <= 10
ORDER BY 
    rp.UpVotes - rp.DownVotes DESC, rp.CloseCount ASC NULLS LAST;
