WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.CreationDate,
        p.LastActivityDate,
        u.DisplayName AS OwnerDisplayName,
        COUNT(c.Id) AS CommentCount,
        COUNT(DISTINCT a.Id) AS AnswerCount,
        ROW_NUMBER() OVER (PARTITION BY p.Id ORDER BY p.CreationDate DESC) AS RowNum
    FROM 
        Posts p
    LEFT JOIN 
        Users u ON p.OwnerUserId = u.Id
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Posts a ON p.Id = a.ParentId AND a.PostTypeId = 2
    WHERE 
        p.PostTypeId = 1 
    GROUP BY 
        p.Id, p.Title, p.Body, p.CreationDate, p.LastActivityDate, u.DisplayName
),

TopPosts AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.Body,
        rp.CreationDate,
        rp.LastActivityDate,
        rp.OwnerDisplayName,
        rp.CommentCount,
        rp.AnswerCount
    FROM 
        RankedPosts rp
    WHERE 
        rp.RowNum = 1
    ORDER BY 
        rp.LastActivityDate DESC
    LIMIT 10
),

PostDetails AS (
    SELECT 
        tp.PostId,
        tp.Title,
        tp.Body,
        tp.CreationDate,
        tp.LastActivityDate,
        tp.OwnerDisplayName,
        tp.CommentCount,
        tp.AnswerCount,
        ph.CreationDate AS HistoryDate,
        pht.Name AS HistoryTypeName,
        ph.Comment AS HistoryComment,
        ph.Text AS HistoryText
    FROM 
        TopPosts tp
    LEFT JOIN 
        PostHistory ph ON tp.PostId = ph.PostId
    LEFT JOIN 
        PostHistoryTypes pht ON ph.PostHistoryTypeId = pht.Id
)

SELECT 
    pd.Title AS PostTitle,
    pd.OwnerDisplayName AS PostOwner,
    pd.CreationDate AS PostCreationDate,
    pd.LastActivityDate AS PostLastActivity,
    pd.CommentCount AS TotalComments,
    pd.AnswerCount AS TotalAnswers,
    STRING_AGG(CONCAT(pd.HistoryTypeName, ': ', COALESCE(pd.HistoryComment, 'N/A'), ' (', TO_CHAR(pd.HistoryDate, 'YYYY-MM-DD HH24:MI:SS'), ')'), '; ') AS HistoryDetails
FROM 
    PostDetails pd
GROUP BY 
    pd.PostId, pd.Title, pd.OwnerDisplayName, pd.CreationDate, pd.LastActivityDate, pd.CommentCount, pd.AnswerCount
ORDER BY 
    pd.LastActivityDate DESC;