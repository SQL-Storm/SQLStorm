
SELECT 
    p.Id AS PostId, 
    p.Title, 
    p.ViewCount, 
    u.DisplayName AS OwnerDisplayName, 
    STRING_AGG(t.TagName, ', ') AS Tags
FROM 
    Posts p
JOIN 
    Users u ON p.OwnerUserId = u.Id
LEFT JOIN 
    (SELECT TRIM(tag_name) AS tag_name 
     FROM UNNEST(STRING_TO_ARRAY(p.Tags, '> <'))) AS tag_name ON TRUE
JOIN 
    Tags t ON TRIM(tag_name.tag_name) = t.TagName
WHERE 
    p.PostTypeId = 1  
GROUP BY 
    p.Id, p.Title, p.ViewCount, u.DisplayName
ORDER BY 
    p.ViewCount DESC
LIMIT 10;
