WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.CreationDate,
        u.DisplayName AS OwnerDisplayName,
        u.Reputation,
        p.ViewCount,
        ROW_NUMBER() OVER (PARTITION BY p.OwnerUserId ORDER BY p.CreationDate DESC) AS Rank
    FROM 
        Posts p
    JOIN 
        Users u ON p.OwnerUserId = u.Id
    WHERE 
        p.PostTypeId = 1 
        AND p.ViewCount > 100 
),
RecentActivity AS (
    SELECT 
        ph.PostId,
        ph.CreationDate AS HistoryDate,
        p.Title,
        p.OwnerDisplayName,
        p.ViewCount,
        ht.Name AS HistoryType
    FROM 
        PostHistory ph
    JOIN 
        Posts p ON ph.PostId = p.Id
    JOIN 
        PostHistoryTypes ht ON ph.PostHistoryTypeId = ht.Id
    WHERE 
        ph.CreationDate >= cast('2024-10-01 12:34:56' as timestamp) - INTERVAL '30 days' 
),
CombinedData AS (
    SELECT 
        rp.PostId,
        rp.Title,
        rp.Body,
        rp.CreationDate,
        rp.OwnerDisplayName,
        rp.Reputation,
        rp.ViewCount,
        ra.HistoryDate,
        ra.HistoryType
    FROM 
        RankedPosts rp
    LEFT JOIN 
        RecentActivity ra ON rp.PostId = ra.PostId
    WHERE 
        rp.Rank <= 3 
)
SELECT 
    c.PostId,
    c.Title,
    c.Body,
    c.CreationDate,
    c.OwnerDisplayName,
    c.Reputation,
    c.ViewCount,
    COALESCE(c.HistoryDate, 'No Recent Activity') AS LatestActivityDate,
    COALESCE(c.HistoryType, 'No Recent Activity') AS LatestActivityType
FROM 
    CombinedData c
ORDER BY 
    c.ViewCount DESC;