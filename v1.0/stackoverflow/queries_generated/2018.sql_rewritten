WITH RankedPosts AS (
    SELECT 
        p.Id,
        p.Title,
        p.ViewCount,
        p.CreationDate,
        ROW_NUMBER() OVER(PARTITION BY p.OwnerUserId ORDER BY p.ViewCount DESC) AS Rank
    FROM 
        Posts p
    WHERE 
        p.CreationDate >= cast('2024-10-01 12:34:56' as timestamp) - INTERVAL '1 year'
        AND p.ViewCount IS NOT NULL
),
UserStats AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        COUNT(DISTINCT p.Id) AS PostCount,
        COUNT(DISTINCT c.Id) AS CommentCount,
        SUM(v.BountyAmount) AS TotalBounties
    FROM 
        Users u
    LEFT JOIN 
        Posts p ON u.Id = p.OwnerUserId
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId AND v.VoteTypeId = 8 
    GROUP BY 
        u.Id
)
SELECT 
    u.DisplayName,
    us.PostCount,
    us.CommentCount,
    COALESCE(MAX(rp.ViewCount), 0) AS MaxViewCount,
    COALESCE(SUM(CASE WHEN rp.Rank = 1 THEN 1 ELSE 0 END), 0) AS TopPostsCount,
    us.TotalBounties
FROM 
    UserStats us
JOIN 
    Users u ON us.UserId = u.Id
LEFT JOIN 
    RankedPosts rp ON rp.OwnerUserId = u.Id
GROUP BY 
    u.DisplayName, us.PostCount, us.CommentCount, us.TotalBounties
HAVING 
    us.PostCount > 0
ORDER BY 
    us.TotalBounties DESC, us.CommentCount DESC
LIMIT 10
UNION ALL
SELECT 
    'Total' AS DisplayName,
    COUNT(*) AS PostCount,
    SUM(us.CommentCount) AS CommentCount,
    COALESCE(SUM(rp.ViewCount), 0) AS MaxViewCount,
    COALESCE(SUM(CASE WHEN rp.Rank = 1 THEN 1 ELSE 0 END), 0) AS TopPostsCount,
    SUM(us.TotalBounties) AS TotalBounties
FROM 
    UserStats us
LEFT JOIN 
    RankedPosts rp ON rp.OwnerUserId IN (SELECT Id FROM Users)
WHERE 
    us.PostCount > 0;