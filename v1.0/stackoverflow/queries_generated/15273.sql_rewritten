SELECT 
    p.Title, 
    p.CreationDate, 
    u.DisplayName as Author, 
    COUNT(c.Id) as CommentCount, 
    SUM(v.voteTypeId = 2) as UpVoteCount, 
    SUM(v.voteTypeId = 3) as DownVoteCount
FROM 
    Posts p
JOIN 
    Users u ON p.OwnerUserId = u.Id
LEFT JOIN 
    Comments c ON p.Id = c.PostId
LEFT JOIN 
    Votes v ON p.Id = v.PostId
WHERE 
    p.PostTypeId = 1 
GROUP BY 
    p.Id, u.DisplayName
ORDER BY 
    p.CreationDate DESC
LIMIT 10;