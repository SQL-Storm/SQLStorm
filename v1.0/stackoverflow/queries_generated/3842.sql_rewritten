WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.CreationDate,
        p.Score,
        p.ViewCount,
        p.AnswerCount,
        RANK() OVER (PARTITION BY p.PostTypeId ORDER BY p.Score DESC) AS RankScore,
        COALESCE(SUM(v.BountyAmount) FILTER (WHERE v.VoteTypeId = 9) OVER (PARTITION BY p.Id), 0) AS TotalBounty
    FROM 
        Posts p
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    WHERE 
        p.CreationDate >= cast('2024-10-01 12:34:56' as timestamp) - INTERVAL '1 year'
),
PostBadges AS (
    SELECT 
        b.UserId,
        COUNT(*) AS BadgeCount,
        STRING_AGG(b.Name, ', ') AS BadgeNames
    FROM 
        Badges b
    JOIN 
        Users u ON b.UserId = u.Id
    GROUP BY 
        b.UserId
),
ClosedPosts AS (
    SELECT
        ph.PostId,
        ph.CreationDate AS CloseDate,
        shr.Comment AS CloseReason
    FROM 
        PostHistory ph
    JOIN 
        CloseReasonTypes shr ON ph.Comment::int = shr.Id
    WHERE 
        ph.PostHistoryTypeId = 10
)
SELECT 
    rp.PostId,
    rp.Title,
    rp.CreationDate,
    rp.Score,
    rp.ViewCount,
    rp.AnswerCount,
    rp.RankScore,
    rp.TotalBounty,
    COALESCE(pb.BadgeCount, 0) AS UserBadgeCount,
    STRING_AGG(DISTINCT pb.BadgeNames, '; ') AS UserBadges,
    cp.CloseDate,
    cp.CloseReason
FROM 
    RankedPosts rp
LEFT JOIN 
    PostBadges pb ON rp.PostId IN (SELECT p.Id FROM Posts p WHERE p.OwnerUserId = pb.UserId)
LEFT JOIN 
    ClosedPosts cp ON rp.PostId = cp.PostId
WHERE 
    rp.RankScore <= 5
GROUP BY 
    rp.PostId, rp.Title, rp.CreationDate, rp.Score, rp.ViewCount, rp.AnswerCount, rp.RankScore, rp.TotalBounty, cp.CloseDate, cp.CloseReason
ORDER BY 
    rp.Score DESC, rp.ViewCount DESC;