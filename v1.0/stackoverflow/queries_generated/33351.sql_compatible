
WITH RecursivePostHierarchy AS (
    
    SELECT 
        p.Id AS PostId,
        p.ParentId,
        p.Title,
        0 AS Level
    FROM 
        Posts AS p
    WHERE 
        p.ParentId IS NULL

    UNION ALL

    SELECT 
        p.Id AS PostId,
        p.ParentId,
        p.Title,
        rph.Level + 1
    FROM 
        Posts AS p
    INNER JOIN 
        RecursivePostHierarchy AS rph 
    ON 
        p.ParentId = rph.PostId
),
UserBadges AS (
    
    SELECT 
        b.UserId,
        COUNT(b.Id) AS BadgeCount,
        MAX(b.Date) AS MostRecentBadgeDate
    FROM 
        Badges AS b
    GROUP BY 
        b.UserId
),
PostVoteSummary AS (
    
    SELECT 
        p.Id,
        SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END) - 
        SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END) AS NetScore,
        COUNT(v.Id) AS TotalVotes
    FROM 
        Posts AS p
    LEFT JOIN 
        Votes AS v ON p.Id = v.PostId
    GROUP BY 
        p.Id
)
SELECT 
    p.Id AS PostId,
    p.Title,
    p.CreationDate,
    COALESCE(rph.Level, -1) AS HierarchyLevel,
    u.DisplayName AS OwnerName,
    COALESCE(ub.BadgeCount, 0) AS UserBadgeCount,
    COALESCE(ub.MostRecentBadgeDate, 'No badges') AS UserMostRecentBadgeDate,
    pvs.NetScore,
    pvs.TotalVotes
FROM 
    Posts AS p
INNER JOIN 
    Users AS u ON p.OwnerUserId = u.Id
LEFT JOIN 
    RecursivePostHierarchy AS rph ON p.Id = rph.PostId
LEFT JOIN 
    UserBadges AS ub ON u.Id = ub.UserId
LEFT JOIN 
    PostVoteSummary AS pvs ON p.Id = pvs.Id
WHERE 
    p.Score > 0  
    AND (p.Tags LIKE '%sql%' OR p.Tags LIKE '%database%')  
    AND p.CreationDate >= DATEADD(year, -1, '2024-10-01')
ORDER BY 
    pvs.NetScore DESC, 
    p.CreationDate DESC
LIMIT 100 OFFSET 0;
