
WITH RankedPosts AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        p.Body,
        p.Tags,
        p.Score,
        p.CreationDate,
        ROW_NUMBER() OVER (PARTITION BY p.Tags ORDER BY p.Score DESC) AS Rank
    FROM 
        Posts p
    WHERE 
        p.PostTypeId = 1 
),
TaggedPosts AS (
    SELECT
        rp.PostId,
        rp.Title,
        rp.Body,
        ARRAY_AGG(DISTINCT TRIM(UNNEST(SPLIT_PART(rp.Tags, '>', i))) ORDER BY TRIM(UNNEST(SPLIT_PART(rp.Tags, '>', i)))) AS UniqueTags,
        rp.Score,
        rp.CreationDate
    FROM 
        RankedPosts rp,
        generate_series(1, array_length(string_to_array(rp.Tags, '>'), 1)) AS i
    WHERE 
        rp.Rank <= 5 
    GROUP BY 
        rp.PostId, rp.Title, rp.Body, rp.Score, rp.CreationDate
),
PostInfo AS (
    SELECT 
        tp.PostId,
        tp.Title,
        tp.Body,
        tp.UniqueTags,
        tp.Score,
        tp.CreationDate,
        u.DisplayName AS Creator,
        COUNT(c.Id) AS CommentCount
    FROM 
        TaggedPosts tp
    LEFT JOIN 
        Users u ON tp.PostId = u.Id 
    LEFT JOIN 
        Comments c ON tp.PostId = c.PostId 
    GROUP BY 
        tp.PostId, tp.Title, tp.Body, tp.UniqueTags, tp.Score, tp.CreationDate, u.DisplayName
)
SELECT 
    pi.PostId,
    pi.Title,
    pi.Body,
    pi.UniqueTags,
    pi.Score,
    pi.CreationDate,
    pi.Creator,
    pi.CommentCount,
    COALESCE(ARRAY_AGG(b.Name ORDER BY b.Date DESC), ARRAY[]::TEXT[]) AS BadgesEarned
FROM 
    PostInfo pi
LEFT JOIN 
    Badges b ON pi.Creator = b.UserId
WHERE 
    pi.Score > 10 
GROUP BY 
    pi.PostId, pi.Title, pi.Body, pi.UniqueTags, pi.Score, pi.CreationDate, pi.Creator, pi.CommentCount
ORDER BY 
    pi.Score DESC, pi.CreationDate DESC;
