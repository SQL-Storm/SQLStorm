
WITH UserActivity AS (
    SELECT 
        U.Id AS UserId,
        U.DisplayName,
        COUNT(P.Id) AS PostCount,
        SUM(COALESCE(P.ViewCount, 0)) AS TotalViews,
        SUM(CASE WHEN V.VoteTypeId = 2 THEN 1 ELSE 0 END) AS UpvotesReceived,
        SUM(CASE WHEN V.VoteTypeId = 2 THEN 1 ELSE 0 END) AS TotalUpvotes,
        SUM(CASE WHEN V.VoteTypeId = 3 THEN 1 ELSE 0 END) AS TotalDownvotes
    FROM Users U
    LEFT JOIN Posts P ON U.Id = P.OwnerUserId
    LEFT JOIN Votes V ON P.Id = V.PostId
    GROUP BY U.Id, U.DisplayName
),
PostStats AS (
    SELECT 
        P.Id AS PostId,
        P.Title,
        P.CreationDate,
        P.Score,
        COUNT(CASE WHEN C.Id IS NOT NULL THEN 1 END) AS TotalComments,
        SUM(CASE WHEN PH.PostHistoryTypeId = 10 THEN 1 ELSE 0 END) AS CloseReasons,
        RANK() OVER (PARTITION BY P.PostTypeId ORDER BY P.Score DESC) AS ScoreRank
    FROM Posts P
    LEFT JOIN Comments C ON P.Id = C.PostId
    LEFT JOIN PostHistory PH ON P.Id = PH.PostId
    GROUP BY P.Id, P.Title, P.CreationDate, P.Score
),
Bounties AS (
    SELECT 
        PostId,
        COUNT(*) AS TotalBounties,
        SUM(CASE WHEN VoteTypeId = 8 THEN BountyAmount ELSE 0 END) AS TotalBountyAmount
    FROM Votes
    WHERE VoteTypeId IN (8, 9)  
    GROUP BY PostId
)

SELECT 
    UA.UserId,
    UA.DisplayName,
    UA.PostCount,
    UA.TotalViews,
    UA.TotalUpvotes,
    UA.TotalDownvotes,
    PS.Title AS TopPostTitle,
    PS.Score,
    PS.TotalComments,
    BS.TotalBounties,
    BS.TotalBountyAmount
FROM UserActivity UA
LEFT JOIN (
    SELECT 
        U.Id,
        PS.Title,
        PS.Score,
        PS.TotalComments,
        RANK() OVER (ORDER BY PS.Score DESC) AS Rank
    FROM UserActivity U
    JOIN PostStats PS ON U.PostCount > 0
) AS PS ON UA.UserId = PS.Id AND PS.Rank = 1  
LEFT JOIN Bounties BS ON PS.PostId = BS.PostId
WHERE UA.TotalViews IS NOT NULL 
ORDER BY UA.TotalViews DESC, UA.TotalUpvotes DESC;
