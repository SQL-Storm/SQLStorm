
WITH UserPosts AS (
    SELECT 
        u.Id AS UserId,
        u.DisplayName,
        COUNT(p.Id) AS PostCount,
        SUM(CASE WHEN p.PostTypeId = 1 THEN 1 ELSE 0 END) AS QuestionCount,
        SUM(CASE WHEN p.PostTypeId = 2 THEN 1 ELSE 0 END) AS AnswerCount
    FROM 
        Users u
    LEFT JOIN 
        Posts p ON u.Id = p.OwnerUserId
    GROUP BY 
        u.Id, u.DisplayName
),
RankedUsers AS (
    SELECT 
        UserId,
        DisplayName,
        PostCount,
        QuestionCount,
        AnswerCount,
        RANK() OVER (ORDER BY PostCount DESC) AS PostRank,
        DENSE_RANK() OVER (ORDER BY QuestionCount DESC) AS QuestionRank
    FROM 
        UserPosts
),
TopUser AS (
    SELECT 
        UserId,
        DisplayName,
        PostCount,
        QuestionCount,
        AnswerCount,
        CONCAT(DisplayName, ' (Posts: ', PostCount, ', Questions: ', QuestionCount, ')') AS UserSummary
    FROM 
        RankedUsers
    WHERE 
        PostCount > 0
    ORDER BY 
        PostRank
    LIMIT 1
),
PostStatistics AS (
    SELECT 
        p.Id AS PostId,
        p.Title,
        COUNT(c.Id) AS CommentCount,
        MAX(v.CreationDate) AS LastVoteDate,
        SUM(CASE WHEN v.VoteTypeId = 2 THEN 1 ELSE 0 END) AS Upvotes,
        SUM(CASE WHEN v.VoteTypeId = 3 THEN 1 ELSE 0 END) AS Downvotes,
        ROW_NUMBER() OVER (PARTITION BY p.PostTypeId ORDER BY p.CreationDate DESC) AS RecentPostRank
    FROM 
        Posts p
    LEFT JOIN 
        Comments c ON p.Id = c.PostId
    LEFT JOIN 
        Votes v ON p.Id = v.PostId
    GROUP BY 
        p.Id, p.Title
),
PostWithHistory AS (
    SELECT 
        ph.PostId,
        STRING_AGG(DISTINCT pht.Name, ', ') AS HistoryTypes,
        MAX(ph.CreationDate) AS LastHistoryDate
    FROM 
        PostHistory ph
    JOIN 
        PostHistoryTypes pht ON ph.PostHistoryTypeId = pht.Id
    GROUP BY 
        ph.PostId
)
SELECT 
    pu.UserSummary,
    ps.PostId,
    ps.Title,
    ps.CommentCount,
    ps.LastVoteDate,
    ps.Upvotes,
    ps.Downvotes,
    pwh.HistoryTypes,
    pwh.LastHistoryDate
FROM 
    TopUser pu
JOIN 
    Posts ps ON pu.UserId = ps.OwnerUserId
LEFT JOIN 
    PostWithHistory pwh ON ps.Id = pwh.PostId
WHERE 
    ps.AcceptedAnswerId IS NULL 
    AND ps.CreationDate < '2024-10-01 12:34:56'::timestamp - INTERVAL '1 year'
    AND (ps.ViewCount IS NULL OR ps.ViewCount > 100)
ORDER BY 
    ps.CommentCount DESC NULLS LAST
LIMIT 50;
