
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supplycost,
        ROW_NUMBER() OVER (PARTITION BY s.s_nationkey ORDER BY SUM(ps.ps_supplycost * ps.ps_availqty) DESC) AS rank
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name, s.s_nationkey
),
CustomerOrders AS (
    SELECT 
        c.c_custkey, 
        COUNT(o.o_orderkey) AS order_count,
        SUM(o.o_totalprice) AS total_spent,
        ROW_NUMBER() OVER (PARTITION BY c.c_nationkey ORDER BY SUM(o.o_totalprice) DESC) AS cust_rank
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_nationkey
),
OrderStats AS (
    SELECT 
        l.l_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_line_revenue,
        AVG(l.l_tax) AS avg_tax,
        MAX(l.l_quantity) AS max_quantity,
        MIN(l.l_discount) AS min_discount
    FROM 
        lineitem l
    GROUP BY 
        l.l_orderkey
),
SpecialCases AS (
    SELECT 
        n.n_nationkey,
        n.n_name,
        (CASE 
            WHEN COUNT(DISTINCT s.s_suppkey) = 0 THEN 0 
            ELSE SUM(l.l_extendedprice * (1 - l.l_discount)) 
        END) AS nation_revenue
    FROM 
        nation n
    FULL OUTER JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    LEFT JOIN 
        lineitem l ON s.s_suppkey = l.l_suppkey
    GROUP BY 
        n.n_nationkey, n.n_name
)
SELECT 
    r.r_name,
    COUNT(DISTINCT cs.c_custkey) AS customers,
    SUM(osc.total_line_revenue) AS total_line_revenue,
    MAX(cs.order_count) AS max_orders,
    COALESCE(SUM(sc.nation_revenue), 0) AS total_nation_revenue
FROM 
    region r
LEFT JOIN 
    nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN 
    CustomerOrders cs ON cs.c_custkey IN (SELECT c.c_custkey FROM customer c WHERE c.c_nationkey = n.n_nationkey)
LEFT JOIN 
    OrderStats osc ON osc.l_orderkey IN (SELECT lo.o_orderkey FROM orders lo JOIN customer c ON lo.o_custkey = c.c_custkey WHERE c.c_nationkey = n.n_nationkey)
LEFT JOIN 
    SpecialCases sc ON sc.n_nationkey = n.n_nationkey
GROUP BY 
    r.r_name
HAVING 
    COUNT(DISTINCT cs.c_custkey) > 0 OR SUM(osc.total_line_revenue) IS NOT NULL
ORDER BY 
    total_nation_revenue DESC, max_orders DESC;
