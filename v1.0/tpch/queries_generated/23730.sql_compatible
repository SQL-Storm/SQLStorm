
WITH RankedOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        o.o_totalprice,
        RANK() OVER (PARTITION BY o.o_orderstatus ORDER BY o.o_orderdate DESC) AS order_rank
    FROM 
        orders o
    WHERE 
        o.o_orderdate >= '1997-01-01' AND o.o_orderdate < '1998-01-01'
), 
TotalSpent AS (
    SELECT 
        c.c_custkey,
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey
), 
SupplierPartDetails AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        ps.ps_availqty,
        ps.ps_supplycost
    FROM 
        part p
    JOIN 
        partsupp ps ON p.p_partkey = ps.ps_partkey
    WHERE 
        ps.ps_availqty > 0
), 
LatestLineItem AS (
    SELECT 
        l.l_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_lineitem_value
    FROM 
        lineitem l
    GROUP BY 
        l.l_orderkey
),
FilteredNations AS (
    SELECT 
        n.n_nationkey,
        n.n_name
    FROM 
        nation n
    WHERE 
        n.n_comment IS NOT NULL AND n.n_comment <> ''
), 
CustomerSupplierMatch AS (
    SELECT 
        c.c_custkey,
        s.s_suppkey,
        c.c_acctbal
    FROM 
        customer c
    LEFT JOIN 
        supplier s ON c.c_nationkey = s.s_nationkey
    WHERE 
        c.c_acctbal > 
        (SELECT AVG(c2.c_acctbal) FROM customer c2 WHERE c2.c_nationkey = c.c_nationkey)
)
SELECT 
    r.o_orderkey,
    r.o_orderdate,
    COALESCE(t.total_spent, 0) AS total_spent,
    COALESCE(s.p_name, 'No Part') AS part_name,
    s.ps_availqty,
    COALESCE(lp.total_lineitem_value, 0) AS total_lineitem_value,
    n.n_name AS nation_name,
    csm.s_suppkey
FROM 
    RankedOrders r
LEFT JOIN 
    TotalSpent t ON r.o_orderkey IN (SELECT o_orderkey FROM orders WHERE o_custkey = t.c_custkey)
LEFT JOIN 
    SupplierPartDetails s ON s.ps_availqty < (SELECT AVG(ps.ps_availqty) FROM SupplierPartDetails ps)
LEFT JOIN 
    LatestLineItem lp ON r.o_orderkey = lp.l_orderkey
LEFT JOIN 
    FilteredNations n ON n.n_nationkey IN (SELECT c_nationkey FROM customer WHERE c_custkey = r.o_orderkey)
LEFT JOIN 
    CustomerSupplierMatch csm ON r.o_orderkey = csm.c_custkey
WHERE 
    r.order_rank = 1
ORDER BY 
    r.o_orderdate DESC, r.o_orderkey;
