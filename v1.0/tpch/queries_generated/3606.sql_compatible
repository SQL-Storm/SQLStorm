
WITH ranked_suppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_nationkey,
        ROW_NUMBER() OVER (PARTITION BY s.s_nationkey ORDER BY s.s_acctbal DESC) AS rnk,
        s.s_acctbal
    FROM 
        supplier s
),
top_suppliers AS (
    SELECT 
        r.r_name,
        ns.n_name,
        s.s_name,
        s.s_acctbal
    FROM 
        ranked_suppliers s
    JOIN 
        nation ns ON s.s_nationkey = ns.n_nationkey
    JOIN 
        region r ON ns.n_regionkey = r.r_regionkey
    WHERE 
        r.r_name IN ('ASIA', 'EUROPE')
        AND s.rnk <= 5
),
order_summary AS (
    SELECT 
        o.o_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales,
        COUNT(DISTINCT o.o_custkey) AS unique_customers,
        AVG(l.l_quantity) AS avg_quantity,
        MIN(l.l_shipdate) AS first_ship_date,
        MAX(l.l_shipdate) AS last_ship_date
    FROM 
        orders o
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderstatus = 'F'
    GROUP BY 
        o.o_orderkey
),
sales_with_supplier AS (
    SELECT 
        os.o_orderkey,
        os.total_sales,
        ts.s_name
    FROM 
        order_summary os
    LEFT JOIN 
        top_suppliers ts ON os.o_orderkey IN (
            SELECT 
                l.l_orderkey 
            FROM 
                lineitem l 
            JOIN 
                partsupp ps ON l.l_partkey = ps.ps_partkey 
            WHERE 
                ps.ps_suppkey = ts.s_suppkey
        )
)
SELECT 
    s.s_name,
    SUM(sw.total_sales) AS total_sales_by_supplier,
    COUNT(*) AS order_count,
    AVG(sw.total_sales) AS avg_order_value,
    STRING_AGG(DISTINCT CAST(s.s_acctbal AS VARCHAR)) AS supplier_account_balances,
    NULLIF(COUNT(DISTINCT s.s_nationkey), 0) AS unique_nations_served
FROM 
    sales_with_supplier sw
JOIN 
    top_suppliers s ON sw.s_name = s.s_name
GROUP BY 
    s.s_name
ORDER BY 
    total_sales_by_supplier DESC
FETCH FIRST 10 ROWS ONLY;
