
WITH CustomerOrders AS (
    SELECT 
        c.c_custkey, 
        c.c_name, 
        SUM(o.o_totalprice) AS total_spent, 
        COUNT(o.o_orderkey) AS total_orders
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
),
SuppliersParts AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name
),
TopCustomers AS (
    SELECT 
        c.c_custkey, 
        c.c_name, 
        co.total_spent, 
        co.total_orders,
        RANK() OVER (ORDER BY co.total_spent DESC) AS rnk
    FROM 
        CustomerOrders co
)
SELECT 
    tc.c_custkey, 
    tc.c_name, 
    tc.total_spent, 
    tc.total_orders, 
    sp.s_name AS supplier_name, 
    sp.total_supply_cost
FROM 
    TopCustomers tc
JOIN 
    lineitem li ON tc.total_orders = li.l_orderkey
JOIN 
    partsupp ps ON li.l_partkey = ps.ps_partkey
JOIN 
    SuppliersParts sp ON ps.ps_suppkey = sp.s_suppkey
WHERE 
    tc.rnk <= 10
ORDER BY 
    tc.total_spent DESC, sp.total_supply_cost DESC;
