
WITH RECURSIVE CTE_Summary AS (
    SELECT 
        n.n_nationkey,
        n.n_name,
        r.r_name AS region,
        SUM(COALESCE(c.c_acctbal, 0)) AS total_acctbal,
        COUNT(DISTINCT o.o_orderkey) AS order_count
    FROM 
        nation n
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
    LEFT JOIN 
        customer c ON n.n_nationkey = c.c_nationkey
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        n.n_nationkey, n.n_name, r.r_name
    HAVING 
        SUM(COALESCE(c.c_acctbal, 0)) > 10000
),
CTE_Supplier AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        s.s_suppkey,
        s.s_name,
        ps.ps_availqty,
        ps.ps_supplycost,
        ROW_NUMBER() OVER (PARTITION BY p.p_partkey ORDER BY ps.ps_supplycost) AS rn
    FROM 
        part p
    JOIN 
        partsupp ps ON p.p_partkey = ps.ps_partkey
    JOIN 
        supplier s ON ps.ps_suppkey = s.s_suppkey
    WHERE 
        p.p_retailprice > 100.00
    AND 
        ps.ps_availqty >= 1
)
SELECT 
    n.region,
    n.n_name,
    SUM(COALESCE(ps.ps_supplycost, 0)) AS total_supplycost,
    COUNT(DISTINCT CASE WHEN ps.rn = 1 THEN p.p_partkey END) AS unique_parts,
    COUNT(DISTINCT o.o_orderkey) AS unique_orders
FROM 
    CTE_Summary n
LEFT JOIN 
    CTE_Supplier ps ON n.n_nationkey IN (SELECT c.c_nationkey FROM customer c WHERE c.c_custkey IN (SELECT o.o_custkey FROM orders o))
LEFT JOIN 
    orders o ON o.o_orderkey IN (SELECT l.o_orderkey FROM lineitem l WHERE l.l_shipdate BETWEEN DATE '1997-01-01' AND DATE '1997-12-31')
GROUP BY 
    n.region, n.n_name
HAVING 
    SUM(COALESCE(ps.ps_supplycost, 0)) > (SELECT AVG(supply_cost) FROM (SELECT DISTINCT ps.ps_supplycost AS supply_cost FROM CTE_Supplier ps WHERE ps.rn = 1) AS AvgCost) 
    OR 
    n.n_name IS NULL
ORDER BY 
    total_supplycost DESC
LIMIT 10
OFFSET 5;
