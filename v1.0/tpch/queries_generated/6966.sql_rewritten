WITH RankedOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        o.o_totalprice,
        ROW_NUMBER() OVER (PARTITION BY o.o_orderdate ORDER BY o.o_totalprice DESC) AS rn
    FROM 
        orders o
    WHERE 
        o.o_orderdate BETWEEN DATE '1997-01-01' AND DATE '1997-12-31'
), 
TopOrders AS (
    SELECT 
        ro.o_orderkey,
        ro.o_orderdate,
        ro.o_totalprice
    FROM 
        RankedOrders ro
    WHERE 
        ro.rn <= 10
), 
SupplierStats AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name
), 
LineItemDetails AS (
    SELECT 
        li.l_orderkey,
        SUM(li.l_extendedprice * (1 - li.l_discount)) AS revenue,
        COUNT(DISTINCT li.l_linenumber) AS line_count
    FROM 
        lineitem li
    GROUP BY 
        li.l_orderkey
)
SELECT 
    to.o_orderkey,
    to.o_orderdate,
    to.o_totalprice,
    ss.s_name,
    ss.total_supply_cost,
    lid.revenue,
    lid.line_count
FROM 
    TopOrders to
JOIN 
    LineItemDetails lid ON to.o_orderkey = lid.l_orderkey
JOIN 
    partsupp ps ON lid.l_orderkey = ps.ps_partkey
JOIN 
    supplier ss ON ps.ps_suppkey = ss.s_suppkey
WHERE 
    ss.total_supply_cost > 10000
ORDER BY 
    to.o_orderdate, to.o_totalprice DESC;