
WITH RankedSuppliers AS (
    SELECT
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        COUNT(ps.ps_partkey) AS part_count,
        RANK() OVER (ORDER BY s.s_acctbal DESC) AS rank_acctbal
    FROM
        supplier s
    JOIN
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY
        s.s_suppkey, s.s_name, s.s_acctbal
),
HighValueCustomers AS (
    SELECT
        c.c_custkey,
        c.c_name,
        c.c_acctbal,
        COUNT(o.o_orderkey) AS order_count
    FROM
        customer c
    LEFT JOIN
        orders o ON c.c_custkey = o.o_custkey
    WHERE
        c.c_acctbal > 1000
    GROUP BY
        c.c_custkey, c.c_name, c.c_acctbal
),
FrequentProducts AS (
    SELECT
        p.p_partkey,
        p.p_name,
        SUM(l.l_quantity) AS total_quantity
    FROM
        part p
    JOIN
        lineitem l ON p.p_partkey = l.l_partkey
    GROUP BY
        p.p_partkey, p.p_name
    HAVING
        SUM(l.l_quantity) > 500
)
SELECT
    r.r_name AS region_name,
    COUNT(DISTINCT hs.c_custkey) AS high_value_customer_count,
    SUM(s.part_count) AS total_suppliers,
    SUM(f.total_quantity) AS total_quantity_for_frequent_products
FROM
    region r
LEFT JOIN
    nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN
    supplier s ON n.n_nationkey = s.s_nationkey
LEFT JOIN
    HighValueCustomers hs ON hs.c_acctbal > 1000
LEFT JOIN
    FrequentProducts f ON f.p_partkey IN (SELECT ps.ps_partkey FROM partsupp ps WHERE ps.ps_suppkey = s.s_suppkey)
GROUP BY
    r.r_name
HAVING
    SUM(f.total_quantity) > 1000
ORDER BY
    region_name;
