
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        ROW_NUMBER() OVER (PARTITION BY s.s_nationkey ORDER BY s.s_acctbal DESC) AS rn
    FROM 
        supplier s
), 
OrderSummary AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
        COUNT(DISTINCT o.o_custkey) AS total_customers,
        COUNT(*) AS total_lines
    FROM 
        orders o
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderdate >= DATE '1997-01-01' AND o.o_orderdate < DATE '1998-01-01'
    GROUP BY 
        o.o_orderkey, o.o_orderdate
), 
SupplierRevenue AS (
    SELECT 
        ps.ps_suppkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS supplier_revenue
    FROM 
        partsupp ps
    JOIN 
        lineitem l ON ps.ps_partkey = l.l_partkey
    GROUP BY 
        ps.ps_suppkey
), 
RegionSummary AS (
    SELECT 
        r.r_regionkey,
        r.r_name,
        COALESCE(SUM(sr.supplier_revenue), 0) AS total_supplier_revenue
    FROM 
        region r
    LEFT JOIN 
        nation n ON r.r_regionkey = n.n_regionkey
    LEFT JOIN 
        RankedSuppliers s ON n.n_nationkey = s.s_nationkey
    LEFT JOIN 
        SupplierRevenue sr ON s.s_suppkey = sr.ps_suppkey
    GROUP BY 
        r.r_regionkey, r.r_name
)
SELECT 
    rs.r_name,
    COUNT(DISTINCT o.o_orderkey) AS total_orders,
    SUM(o.total_revenue) AS total_revenue,
    AVG(o.total_customers) AS avg_customers_per_order,
    MAX(o.total_lines) AS max_lines_per_order,
    COALESCE(SUM(rs.total_supplier_revenue), 0) AS total_region_supplier_revenue
FROM 
    RegionSummary rs
LEFT JOIN 
    OrderSummary o ON rs.r_regionkey = o.o_orderkey
GROUP BY 
    rs.r_name
HAVING 
    COUNT(DISTINCT o.o_orderkey) > 10
ORDER BY 
    total_revenue DESC;
