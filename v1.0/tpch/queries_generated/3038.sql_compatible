
WITH ranked_orders AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        o.o_totalprice,
        ROW_NUMBER() OVER (PARTITION BY o.o_custkey ORDER BY o.o_orderdate DESC) AS rn
    FROM 
        orders o
    WHERE 
        o.o_orderstatus = 'O' AND 
        o.o_totalprice > 10000
),
filtered_customers AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        n.n_name AS nation_name,
        c.c_acctbal
    FROM 
        customer c
    JOIN 
        nation n ON c.c_nationkey = n.n_nationkey
    WHERE 
        c.c_acctbal > (SELECT AVG(c2.c_acctbal) FROM customer c2)
),
top_part_supplies AS (
    SELECT 
        ps.ps_partkey,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_value
    FROM 
        partsupp ps
    GROUP BY 
        ps.ps_partkey
    HAVING 
        SUM(ps.ps_supplycost * ps.ps_availqty) > 50000
),
order_lineitem_summary AS (
    SELECT 
        l.l_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS net_revenue,
        COUNT(l.l_orderkey) AS total_items
    FROM 
        lineitem l
    WHERE 
        l.l_shipdate >= '1997-01-01' AND 
        l.l_returnflag = 'N'
    GROUP BY 
        l.l_orderkey
)
SELECT 
    COALESCE(pc.c_name, 'Unknown Customer') AS customer_name,
    pc.nation_name,
    COUNT(DISTINCT o.o_orderkey) AS total_orders,
    SUM(ol.net_revenue) AS total_revenue,
    MAX(o.o_totalprice) AS max_order_value
FROM 
    filtered_customers pc
LEFT JOIN 
    ranked_orders o ON pc.c_custkey = o.o_orderkey
LEFT JOIN 
    order_lineitem_summary ol ON o.o_orderkey = ol.l_orderkey
JOIN 
    top_part_supplies ps ON ps.ps_partkey IN (
        SELECT l.l_partkey 
        FROM lineitem l 
        WHERE l.l_orderkey = o.o_orderkey
    )
WHERE 
    o.rn = 1
GROUP BY 
    pc.c_custkey, pc.c_name, pc.nation_name
HAVING 
    COUNT(DISTINCT o.o_orderkey) > 5 AND 
    MAX(o.o_totalprice) > 15000
ORDER BY 
    total_revenue DESC;
