WITH nation_summary AS (
    SELECT n.n_name, COUNT(DISTINCT s.s_suppkey) AS supplier_count,
           SUM(ps.ps_availqty) AS total_avail_qty,
           AVG(s.s_acctbal) AS avg_acctbal
    FROM nation n
    JOIN supplier s ON n.n_nationkey = s.s_nationkey
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY n.n_name
),
top_nations AS (
    SELECT n_name, supplier_count, total_avail_qty, avg_acctbal,
           RANK() OVER (ORDER BY total_avail_qty DESC) AS rank_by_availability
    FROM nation_summary
    WHERE supplier_count > 5
)
SELECT tn.n_name, tn.supplier_count, tn.total_avail_qty, tn.avg_acctbal,
       COUNT(DISTINCT o.o_orderkey) AS order_count,
       SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
FROM top_nations tn
LEFT JOIN supplier s ON tn.n_name = (SELECT n_name FROM nation WHERE n_nationkey = s.s_nationkey)
LEFT JOIN customer c ON s.s_nationkey = c.c_nationkey
LEFT JOIN orders o ON c.c_custkey = o.o_custkey
LEFT JOIN lineitem l ON o.o_orderkey = l.l_orderkey
WHERE o.o_orderdate >= '1997-01-01' AND o.o_orderdate < '1998-01-01'
GROUP BY tn.n_name, tn.supplier_count, tn.total_avail_qty, tn.avg_acctbal
ORDER BY tn.rank_by_availability, total_sales DESC;