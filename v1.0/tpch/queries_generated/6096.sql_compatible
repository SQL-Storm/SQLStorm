
WITH CustomerOrders AS (
    SELECT c.c_custkey, c.c_name, o.o_orderkey, o.o_orderdate, o.o_totalprice
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    WHERE o.o_orderstatus = 'O'
      AND o.o_orderdate >= DATE '1997-01-01'
      AND o.o_orderdate < DATE '1997-10-01'
),
SupplierParts AS (
    SELECT ps.ps_partkey, s.s_suppkey, s.s_name, ps.ps_availqty, ps.ps_supplycost
    FROM partsupp ps
    JOIN supplier s ON ps.ps_suppkey = s.s_suppkey
    WHERE ps.ps_availqty > 0
),
LineItemSummary AS (
    SELECT l.l_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM lineitem l
    GROUP BY l.l_orderkey
),
NationRegions AS (
    SELECT n.n_nationkey, r.r_name
    FROM nation n
    JOIN region r ON n.n_regionkey = r.r_regionkey
)
SELECT 
    co.c_custkey, 
    co.c_name, 
    COUNT(DISTINCT co.o_orderkey) AS total_orders,
    SUM(co.o_totalprice) AS total_spent,
    COUNT(DISTINCT sp.ps_partkey) AS unique_parts_supplied,
    SUM(sp.ps_supplycost * sp.ps_availqty) AS total_supply_cost,
    SUM(lis.total_revenue) AS total_line_item_revenue,
    nr.r_name AS region_name
FROM CustomerOrders co
LEFT JOIN SupplierParts sp ON sp.ps_partkey IN (SELECT DISTINCT l.ps_partkey FROM lineitem l WHERE l.l_orderkey = co.o_orderkey)
LEFT JOIN LineItemSummary lis ON co.o_orderkey = lis.l_orderkey
JOIN customer c ON co.c_custkey = c.c_custkey
JOIN NationRegions nr ON c.c_nationkey = nr.n_nationkey
GROUP BY co.c_custkey, co.c_name, nr.r_name
ORDER BY total_spent DESC, total_orders DESC
FETCH FIRST 100 ROWS ONLY;
