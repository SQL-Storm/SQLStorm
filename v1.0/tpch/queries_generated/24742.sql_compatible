
WITH RankedSuppliers AS (
    SELECT
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost,
        ROW_NUMBER() OVER (PARTITION BY n.n_name ORDER BY SUM(ps.ps_supplycost * ps.ps_availqty) DESC) AS rank
    FROM
        supplier s
    INNER JOIN
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    INNER JOIN
        nation n ON s.s_nationkey = n.n_nationkey
    GROUP BY
        s.s_suppkey, s.s_name, n.n_name
),
TopSuppliers AS (
    SELECT
        r.r_name AS region,
        rs.s_name AS supplier_name,
        rs.total_supply_cost,
        n.n_nationkey
    FROM
        RankedSuppliers rs
    JOIN
        nation n ON rs.rank = 1 AND n.n_nationkey = rs.s_nationkey
    JOIN
        region r ON n.n_regionkey = r.r_regionkey
),
OrdersWithDetails AS (
    SELECT
        o.o_orderkey,
        o.o_totalprice,
        COUNT(l.l_orderkey) AS line_item_count
    FROM
        orders o
    LEFT JOIN
        lineitem l ON o.o_orderkey = l.l_orderkey AND l.l_shipmode IN ('AIR', 'SEA')
    GROUP BY
        o.o_orderkey, o.o_totalprice
)
SELECT
    d.region AS region_name,
    d.supplier_name,
    SUM(o.o_totalprice) AS total_orders_value,
    AVG(o.line_item_count) AS average_line_items,
    COUNT(CASE WHEN o.o_totalprice IS NULL THEN 1 END) AS null_order_count
FROM
    TopSuppliers d
LEFT JOIN
    OrdersWithDetails o ON d.total_supply_cost > 1000 AND (o.o_totalprice IS NOT NULL OR o.o_totalprice > 500)
GROUP BY
    d.region, d.supplier_name
HAVING
    AVG(o.line_item_count) > 5
ORDER BY
    d.region, total_orders_value DESC, d.supplier_name;
