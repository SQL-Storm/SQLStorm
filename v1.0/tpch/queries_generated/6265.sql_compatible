
WITH RankedSales AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales,
        RANK() OVER (PARTITION BY c.c_nationkey ORDER BY SUM(l.l_extendedprice * (1 - l.l_discount)) DESC) AS sales_rank
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderdate BETWEEN DATE '1996-01-01' AND DATE '1996-12-31'
    GROUP BY 
        c.c_custkey, c.c_name, c.c_nationkey
),
SalesSummary AS (
    SELECT 
        n.n_name AS nation,
        COUNT(r.c_custkey) AS customer_count,
        AVG(r.total_sales) AS avg_sales
    FROM 
        RankedSales r
    JOIN 
        nation n ON r.c_nationkey = n.n_nationkey
    WHERE 
        r.sales_rank <= 10
    GROUP BY 
        n.n_name
)
SELECT 
    ss.nation,
    ss.customer_count,
    ss.avg_sales,
    r.r_comment
FROM 
    SalesSummary ss
JOIN 
    region r ON r.r_regionkey IN (
        SELECT n.r_regionkey FROM nation n WHERE n.n_nationkey = ss.nation
    )
ORDER BY 
    ss.avg_sales DESC;
