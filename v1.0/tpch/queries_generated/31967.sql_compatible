
WITH RECURSIVE RegionalSales AS (
    SELECT 
        r.r_name AS region_name,
        n.n_name AS nation_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY r.r_regionkey ORDER BY SUM(l.l_extendedprice * (1 - l.l_discount)) DESC) AS rank
    FROM region r
    JOIN nation n ON r.r_regionkey = n.n_regionkey
    JOIN supplier s ON n.n_nationkey = s.s_nationkey
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN part p ON ps.ps_partkey = p.p_partkey
    JOIN lineitem l ON p.p_partkey = l.l_partkey
    GROUP BY r.r_name, n.n_name, r.r_regionkey
),
FilteredSales AS (
    SELECT 
        region_name,
        SUM(total_sales) AS total_sales_by_region
    FROM RegionalSales
    WHERE rank <= 5
    GROUP BY region_name
)
SELECT 
    fs.region_name,
    fs.total_sales_by_region,
    COALESCE(AVG(c.c_acctbal), 0) AS avg_customer_balance,
    MAX(fs.total_sales_by_region) OVER () AS max_sales_in_region
FROM FilteredSales fs
LEFT JOIN customer c ON c.c_nationkey IN (
    SELECT n.n_nationkey 
    FROM nation n 
    JOIN region r ON n.n_regionkey = r.r_regionkey 
    WHERE r.r_name = fs.region_name
)
WHERE fs.total_sales_by_region IS NOT NULL
ORDER BY fs.total_sales_by_region DESC;
