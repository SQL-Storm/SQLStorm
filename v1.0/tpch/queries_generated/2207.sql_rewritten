WITH supplier_summary AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost,
        COUNT(DISTINCT ps.ps_partkey) AS total_parts,
        AVG(s.s_acctbal) AS avg_account_balance
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name
),
customer_order_summary AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COUNT(DISTINCT o.o_orderkey) AS total_orders,
        SUM(o.o_totalprice) AS total_spent,
        MAX(o.o_orderdate) AS last_order_date
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
),
nation_supplier AS (
    SELECT 
        n.n_name,
        COUNT(DISTINCT s.s_suppkey) AS total_suppliers
    FROM 
        nation n
    LEFT JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY 
        n.n_name
),
lineitem_analysis AS (
    SELECT 
        l.l_partkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
        AVG(l.l_tax) AS avg_tax,
        COUNT(l.l_orderkey) AS total_orders
    FROM 
        lineitem l
    WHERE 
        l.l_shipdate >= '1997-01-01'
    GROUP BY 
        l.l_partkey
)
SELECT 
    p.p_name,
    COALESCE(ss.total_supply_cost, 0) AS total_supply_cost,
    COALESCE(cs.total_orders, 0) AS total_orders_by_customer,
    COALESCE(sa.total_suppliers, 0) AS suppliers_in_nation,
    COALESCE(la.total_revenue, 0) AS total_revenue_from_part,
    la.avg_tax AS average_tax_on_sales
FROM 
    part p
LEFT JOIN 
    supplier_summary ss ON p.p_partkey = ss.s_suppkey 
LEFT JOIN 
    customer_order_summary cs ON cs.total_orders > 10
LEFT JOIN 
    nation_supplier sa ON sa.total_suppliers > 5
LEFT JOIN 
    lineitem_analysis la ON p.p_partkey = la.l_partkey
WHERE 
    p.p_retailprice > 50.00
ORDER BY 
    total_supply_cost DESC, total_orders_by_customer DESC;