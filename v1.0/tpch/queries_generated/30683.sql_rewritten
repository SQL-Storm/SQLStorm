WITH RECURSIVE nation_hierarchy AS (
    SELECT n_nationkey, n_name, n_regionkey
    FROM nation
    WHERE n_regionkey IS NOT NULL
    UNION ALL
    SELECT n.n_nationkey, n.n_name, nh.n_regionkey
    FROM nation n
    JOIN nation_hierarchy nh ON n.n_regionkey = nh.n_nationkey
),
supplier_stats AS (
    SELECT s_nationkey, COUNT(DISTINCT s_suppkey) AS total_suppliers, SUM(s_acctbal) AS total_acctbal
    FROM supplier
    GROUP BY s_nationkey
),
part_supplier_stats AS (
    SELECT ps.ps_partkey, COUNT(DISTINCT ps.ps_suppkey) AS total_suppliers, SUM(ps.ps_supplycost) AS total_supplycost
    FROM partsupp ps
    GROUP BY ps.ps_partkey
),
customer_orders AS (
    SELECT c.c_custkey, COUNT(o.o_orderkey) AS total_orders, SUM(o.o_totalprice) AS total_spent
    FROM customer c
    LEFT JOIN orders o ON c.c_custkey = o.o_custkey
    GROUP BY c.c_custkey
)
SELECT 
    n.n_name AS nation_name,
    s.total_suppliers,
    s.total_acctbal,
    p.p_name,
    ps.total_supplycost,
    co.total_orders,
    co.total_spent
FROM nation_hierarchy n
LEFT JOIN supplier_stats s ON n.n_nationkey = s.s_nationkey
LEFT JOIN part_supplier_stats ps ON ps.ps_partkey IN (
    SELECT ps_partkey 
    FROM partsupp 
    WHERE ps_supplycost IS NOT NULL
)
LEFT JOIN customer_orders co ON co.c_custkey IN (
    SELECT DISTINCT o_custkey 
    FROM orders 
    WHERE o_orderdate BETWEEN DATE '1997-01-01' AND DATE '1997-12-31'
)
JOIN part p ON p.p_partkey = ps.ps_partkey
WHERE s.total_suppliers IS NOT NULL 
  AND ps.total_supplycost > 1000
  AND n.n_name LIKE 'A%'
ORDER BY total_spent DESC, nation_name;