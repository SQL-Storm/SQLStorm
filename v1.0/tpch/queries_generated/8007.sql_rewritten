WITH supplier_parts AS (
    SELECT s.s_suppkey, s.s_name, p.p_partkey, p.p_name, p.p_brand, p.p_retailprice, ps.ps_supplycost
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN part p ON ps.ps_partkey = p.p_partkey
),
customer_orders AS (
    SELECT c.c_custkey, c.c_name, o.o_orderkey, o.o_orderdate, o.o_totalprice
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    WHERE o.o_orderstatus = 'O' AND o.o_orderdate >= '1997-01-01'
),
lineitem_aggregates AS (
    SELECT l.l_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS revenue
    FROM lineitem l
    WHERE l.l_returnflag = 'N'
    GROUP BY l.l_orderkey
)
SELECT 
    np.n_name AS nation, 
    SUM(l.revenue) AS total_revenue, 
    COUNT(DISTINCT c.c_custkey) AS number_of_customers, 
    COUNT(DISTINCT s.s_suppkey) AS number_of_suppliers,
    AVG(sp.p_retailprice) AS average_supplied_part_price
FROM nation np
JOIN customer_orders co ON co.o_orderkey IN (
    SELECT l.l_orderkey FROM lineitem l WHERE l.l_orderkey = co.o_orderkey
)
JOIN supplier_parts sp ON sp.p_partkey IN (
    SELECT ps.ps_partkey FROM partsupp ps WHERE ps.ps_suppkey IN (
        SELECT s.s_suppkey FROM supplier s WHERE s.s_nationkey = np.n_nationkey
    )
)
JOIN lineitem_aggregates l ON co.o_orderkey = l.l_orderkey
WHERE np.n_regionkey = (SELECT r_regionkey FROM region WHERE r_name = 'EUROPE')
GROUP BY np.n_name
ORDER BY total_revenue DESC
LIMIT 10;