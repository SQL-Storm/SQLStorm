
WITH Supplier_Summary AS (
    SELECT s.n_nationkey, SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY s.n_nationkey
),
Customer_Orders AS (
    SELECT c.c_nationkey, COUNT(o.o_orderkey) AS order_count, SUM(o.o_totalprice) AS total_order_value
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    GROUP BY c.c_nationkey
),
Nation_Performance AS (
    SELECT n.n_name, COALESCE(ss.total_supply_cost, 0) AS total_supply_cost, 
           COALESCE(co.order_count, 0) AS order_count, COALESCE(co.total_order_value, 0) AS total_order_value
    FROM nation n
    LEFT JOIN Supplier_Summary ss ON n.n_nationkey = ss.n_nationkey
    LEFT JOIN Customer_Orders co ON n.n_nationkey = co.c_nationkey
)
SELECT n.n_name, 
       n.total_supply_cost, 
       n.order_count, 
       n.total_order_value, 
       CASE WHEN n.order_count > 0 THEN n.total_order_value / n.order_count ELSE 0 END AS avg_order_value
FROM Nation_Performance n
ORDER BY n.total_supply_cost DESC, n.order_count DESC;
