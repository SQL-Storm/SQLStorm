
WITH PartDetails AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        p.p_type,
        CONCAT(p.p_name, ' | ', p.p_type) AS full_description
    FROM 
        part p
    WHERE 
        LENGTH(p.p_name) > 10 AND 
        p.p_type LIKE 'MEDICAL%' 
), SupplierDetails AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_nationkey,
        CONCAT(REPLACE(s.s_address, ',', ''), ' - ', s.s_name) AS supplier_info
    FROM 
        supplier s
    WHERE 
        s.s_acctbal > 1000.00
), OrderSummary AS (
    SELECT 
        o.o_orderkey,
        o.o_custkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_order_value
    FROM 
        orders o
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderdate >= DATE '1997-01-01'
    GROUP BY 
        o.o_orderkey, o.o_custkey
), FinalReport AS (
    SELECT 
        pd.full_description,
        sd.supplier_info,
        os.total_order_value,
        c.c_name,
        r.r_name AS region_name
    FROM 
        PartDetails pd
    JOIN 
        partsupp ps ON pd.p_partkey = ps.ps_partkey
    JOIN 
        SupplierDetails sd ON ps.ps_suppkey = sd.s_suppkey
    JOIN 
        customer c ON c.c_custkey = os.o_custkey
    JOIN 
        nation n ON c.c_nationkey = n.n_nationkey
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
    JOIN 
        OrderSummary os ON os.o_custkey = c.c_custkey
)

SELECT 
    full_description,
    supplier_info,
    total_order_value,
    c_name,
    region_name
FROM 
    FinalReport
WHERE 
    total_order_value > 5000
ORDER BY 
    total_order_value DESC, region_name;
