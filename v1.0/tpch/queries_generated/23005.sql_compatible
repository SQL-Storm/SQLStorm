
WITH RECURSIVE NationHierarchy AS (
    SELECT n_nationkey, n_name, n_regionkey, n_comment, 0 AS depth
    FROM nation
    WHERE n_regionkey IS NOT NULL
    
    UNION ALL
    
    SELECT nh.n_nationkey, nh.n_name, nh.n_regionkey, nh.n_comment, depth + 1
    FROM nation AS nh
    JOIN NationHierarchy AS nhParent ON nh.n_regionkey = nhParent.n_nationkey
    WHERE depth < 5
),
SupplierCost AS (
    SELECT s.s_suppkey, s.s_name, SUM(ps.ps_supplycost * ps.ps_availqty) AS total_cost
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY s.s_suppkey, s.s_name
),
OrderDetails AS (
    SELECT o.o_orderkey, SUM(li.l_extendedprice * (1 - li.l_discount)) AS total_revenue
    FROM orders o
    JOIN lineitem li ON o.o_orderkey = li.l_orderkey
    WHERE li.l_shipdate BETWEEN DATE '1997-01-01' AND DATE '1997-12-31'
    GROUP BY o.o_orderkey
),
RankedSuppliers AS (
    SELECT s.s_nationkey, s.s_suppkey, s.s_name, s.total_cost,
           RANK() OVER (PARTITION BY s.s_nationkey ORDER BY s.total_cost DESC) AS rank
    FROM SupplierCost s
    JOIN nation n ON s.n_nationkey = n.n_nationkey
),
TopSuppliers AS (
    SELECT s.s_suppkey, s.s_name, n.r_name, s.rank
    FROM RankedSuppliers s
    JOIN region n ON s.n_regionkey = n.r_regionkey
    WHERE s.rank = 1
),
CountOfUniqueCustomers AS (
    SELECT o.o_orderkey, COUNT(DISTINCT c.c_custkey) AS unique_customers
    FROM orders o
    JOIN customer c ON o.o_custkey = c.c_custkey
    GROUP BY o.o_orderkey
),
FinalAggregation AS (
    SELECT o.o_orderkey, 
           od.total_revenue, 
           COUNT(DISTINCT c.c_custkey) AS unique_customers,
           COALESCE(SUM(nh.cost_total), 0) AS total_region_cost
    FROM OrderDetails od
    LEFT JOIN CountOfUniqueCustomers c ON od.o_orderkey = c.o_orderkey
    LEFT JOIN (
        SELECT n.n_regionkey, SUM(sc.total_cost) AS cost_total 
        FROM TopSuppliers sc
        JOIN nation n ON sc.n_nationkey = n.n_nationkey
        GROUP BY n.n_regionkey
    ) nh ON nh.n_regionkey = (SELECT n.n_regionkey FROM nation n WHERE n.n_nationkey = c.c_nationkey)
    GROUP BY o.o_orderkey, od.total_revenue
)
SELECT p.p_name, SUM(fa.total_revenue) AS aggregate_revenue, STRING_AGG(n.n_name, ', ') AS nation_names
FROM FinalAggregation fa
JOIN lineitem l ON fa.o_orderkey = l.l_orderkey
JOIN part p ON l.l_partkey = p.p_partkey
JOIN supplier s ON l.l_suppkey = s.s_suppkey
JOIN nation n ON s.s_nationkey = n.n_nationkey
GROUP BY p.p_name
HAVING SUM(fa.unique_customers) > 5 AND AVG(fa.total_region_cost) IS NOT NULL
ORDER BY aggregate_revenue DESC;
