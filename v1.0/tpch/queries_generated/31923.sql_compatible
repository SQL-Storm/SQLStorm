
WITH RECURSIVE OrderHierarchy AS (
    SELECT o.o_orderkey, o.o_orderdate, o.o_totalprice, c.c_name,
           ROW_NUMBER() OVER (PARTITION BY o.o_orderkey ORDER BY o.o_orderdate DESC) AS rn
    FROM orders o
    JOIN customer c ON o.o_custkey = c.c_custkey
    WHERE o.o_orderstatus = 'F'
    
    UNION ALL
    
    SELECT o.o_orderkey, o.o_orderdate, o.o_totalprice,
           c.c_name
    FROM orders o
    JOIN OrderHierarchy oh ON o.o_orderkey = oh.o_orderkey
    JOIN customer c ON o.o_custkey = c.c_custkey
    WHERE oh.rn > 1
)
SELECT p.p_name, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
       AVG(o.o_totalprice) AS avg_order_value,
       MAX(o.o_orderdate) AS last_order_date,
       CASE WHEN COUNT(DISTINCT c.c_nationkey) > 1 THEN 'Multiple Nations' ELSE 'Single Nation' END AS customer_nation_diversity
FROM lineitem l
JOIN partsupp ps ON l.l_partkey = ps.ps_partkey
JOIN part p ON ps.ps_partkey = p.p_partkey
JOIN OrderHierarchy o ON l.l_orderkey = o.o_orderkey
JOIN customer c ON o.o_custkey = c.c_custkey
LEFT JOIN supplier s ON ps.ps_suppkey = s.s_suppkey
WHERE l.l_shipdate >= '1997-01-01'
AND p.p_size BETWEEN 10 AND 15
GROUP BY p.p_name
HAVING SUM(l.l_extendedprice) IS NOT NULL
   AND COUNT(DISTINCT s.s_nationkey) > 2
ORDER BY total_revenue DESC
LIMIT 10;
