
WITH RECURSIVE sales_hierarchy AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        o.o_orderkey,
        o.o_totalprice,
        o.o_orderdate,
        o.o_orderstatus,
        1 AS level
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        o.o_orderdate >= '1997-01-01'
    
    UNION ALL
    
    SELECT 
        sh.c_custkey,
        sh.c_name,
        o.o_orderkey,
        o.o_totalprice,
        o.o_orderdate,
        o.o_orderstatus,
        sh.level + 1
    FROM 
        sales_hierarchy sh
    JOIN 
        orders o ON sh.o_orderkey = o.o_orderkey
    WHERE 
        o.o_orderstatus = 'F' AND sh.level < 5 
)

SELECT 
    p.p_partkey,
    p.p_name,
    (SUM(l.l_extendedprice) - SUM(l.l_discount)) AS revenue,
    AVG(l.l_quantity) AS avg_quantity,
    CASE 
        WHEN COUNT(DISTINCT s.s_suppkey) > 1 THEN 'Diverse Suppliers'
        ELSE 'Single Supplier'
    END AS supplier_diversity,
    CASE 
        WHEN MAX(o.o_totalprice) > 1000 THEN 'High Value Orders'
        ELSE 'Regular Orders'
    END AS order_value_category,
    r.r_name,
    COUNT(DISTINCT c.c_custkey) AS unique_customers
FROM 
    part p
LEFT JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
LEFT JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
LEFT JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
LEFT JOIN 
    sales_hierarchy sh ON l.l_orderkey = sh.o_orderkey
LEFT JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
LEFT JOIN 
    region r ON n.n_regionkey = r.r_regionkey
WHERE 
    l.l_shipdate BETWEEN '1997-01-01' AND '1997-12-31'
GROUP BY 
    p.p_partkey, p.p_name, r.r_name, revenue, avg_quantity, supplier_diversity, order_value_category
HAVING 
    SUM(l.l_extendedprice) - SUM(l.l_discount) > 5000
ORDER BY 
    revenue DESC
LIMIT 10;
