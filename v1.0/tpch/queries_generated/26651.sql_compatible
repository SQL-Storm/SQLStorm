
SELECT 
    p.p_partkey, 
    p.p_name, 
    CONCAT('Supplier: ', s.s_name, ', Price: ', FORMAT(ps.ps_supplycost, 2), ', Comments: ', ps.ps_comment) AS supplier_info,
    CONCAT('Region: ', r.r_name, ', Nation: ', n.n_name) AS region_nation_info,
    COUNT(DISTINCT o.o_orderkey) AS total_orders
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
LEFT JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
LEFT JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
WHERE 
    LENGTH(p.p_name) > 10
    AND s.s_acctbal > 1000
    AND LEFT(p.p_comment, 5) = 'Bright'
GROUP BY 
    p.p_partkey, p.p_name, s.s_name, ps.ps_supplycost, ps.ps_comment, r.r_name, n.n_name
ORDER BY 
    total_orders DESC, p.p_name;
