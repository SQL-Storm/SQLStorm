WITH RECURSIVE RegionSales AS (
    SELECT 
        n.r_name AS region_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
    FROM 
        region n
    JOIN 
        nation nat ON n.r_regionkey = nat.n_regionkey
    JOIN 
        supplier s ON nat.n_nationkey = s.s_nationkey
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
    JOIN 
        lineitem l ON p.p_partkey = l.l_partkey 
    JOIN 
        orders o ON l.l_orderkey = o.o_orderkey 
    WHERE 
        o.o_orderdate BETWEEN DATE '1995-01-01' AND DATE '1995-12-31'
    GROUP BY 
        n.r_name

    UNION ALL

    SELECT 
        r.region_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
    FROM 
        RegionSales r
    JOIN 
        nation n ON r.region_name = n.n_name
    JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
    JOIN 
        lineitem l ON p.p_partkey = l.l_partkey 
    JOIN 
        orders o ON l.l_orderkey = o.o_orderkey 
    WHERE 
        o.o_orderdate BETWEEN DATE '1996-01-01' AND DATE '1996-12-31'
    GROUP BY 
        r.region_name
),

CustomerRank AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        RANK() OVER (PARTITION BY c.c_nationkey ORDER BY SUM(o.o_totalprice) DESC) AS rank,
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name, c.c_nationkey
)

SELECT 
    r.region_name,
    SUM(r.total_sales) AS total_region_sales,
    COUNT(cr.c_custkey) AS customer_count,
    AVG(cr.total_spent) AS avg_spent_per_customer
FROM 
    RegionSales r
LEFT JOIN 
    CustomerRank cr ON r.region_name = (
        SELECT n.r_name 
        FROM nation n 
        WHERE n.n_nationkey = (
            SELECT DISTINCT c.c_nationkey 
            FROM customer c 
            WHERE c.c_custkey = cr.c_custkey
        )
    )
GROUP BY 
    r.region_name
HAVING 
    total_region_sales > 1000000
ORDER BY 
    total_region_sales DESC, 
    customer_count ASC;