
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        ROW_NUMBER() OVER (PARTITION BY s.s_nationkey ORDER BY s.s_acctbal DESC) AS rank
    FROM 
        supplier s
),
CustomerOrderSummary AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        SUM(o.o_totalprice) AS total_spent,
        COUNT(o.o_orderkey) AS order_count
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        o.o_orderstatus = 'O'
    GROUP BY 
        c.c_custkey, c.c_name
),
ActiveLineItems AS (
    SELECT 
        l.l_orderkey,
        l.l_partkey,
        l.l_suppkey,
        l.l_quantity,
        l.l_extendedprice,
        l.l_discount,
        l.l_returnflag,
        l.l_linestatus,
        ROW_NUMBER() OVER (PARTITION BY l.l_orderkey ORDER BY l.l_linenumber) AS item_rank
    FROM 
        lineitem l
    WHERE 
        l.l_shipdate >= DATE '1998-10-01' - INTERVAL '30 days'
    AND 
        l.l_returnflag = 'N'
),
NationSupplier AS (
    SELECT 
        n.n_nationkey,
        n.n_name,
        COUNT(DISTINCT s.s_suppkey) AS supplier_count
    FROM 
        nation n
    LEFT JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY 
        n.n_nationkey, n.n_name
)

SELECT 
    cs.c_custkey,
    cs.c_name,
    cs.total_spent,
    cs.order_count,
    n.n_name AS nation_name,
    ns.supplier_count,
    ARRAY_AGG(DISTINCT rs.s_name) AS top_suppliers
FROM 
    CustomerOrderSummary cs
JOIN 
    nation n ON cs.c_nationkey = n.n_nationkey
JOIN 
    NationSupplier ns ON ns.n_nationkey = n.n_nationkey
LEFT JOIN 
    RankedSuppliers rs ON rs.rank <= 3 AND rs.s_nationkey = n.n_nationkey
LEFT JOIN 
    ActiveLineItems ali ON ali.l_orderkey IN (SELECT o.o_orderkey FROM orders o WHERE o.o_custkey = cs.c_custkey)
WHERE 
    cs.total_spent IS NOT NULL
AND 
    cs.order_count > 1
GROUP BY 
    cs.c_custkey, cs.c_name, cs.total_spent, cs.order_count, n.n_name, ns.supplier_count
ORDER BY 
    cs.total_spent DESC;
