
WITH SupplierSales AS (
    SELECT
        s.s_suppkey,
        s.s_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales,
        COUNT(DISTINCT o.o_orderkey) AS total_orders
    FROM
        supplier s
    JOIN
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN
        lineitem l ON ps.ps_partkey = l.l_partkey
    JOIN
        orders o ON o.o_orderkey = l.l_orderkey
    WHERE
        l.l_shipdate >= DATE '1997-01-01'
        AND l.l_shipdate < DATE '1997-12-31'
    GROUP BY
        s.s_suppkey, s.s_name
),
TopSuppliers AS (
    SELECT
        s.s_suppkey,
        s.s_name,
        ROW_NUMBER() OVER (ORDER BY total_sales DESC) AS sales_rank,
        total_sales,
        total_orders
    FROM
        SupplierSales s
)
SELECT
    ns.n_name AS nation_name,
    COALESCE(ts.total_sales, 0) AS total_sales,
    COALESCE(ts.total_orders, 0) AS total_orders,
    CASE
        WHEN ts.sales_rank IS NOT NULL THEN 'Top Supplier'
        ELSE 'Other Supplier'
    END AS supplier_category
FROM
    nation ns
LEFT JOIN
    TopSuppliers ts ON ns.n_nationkey = (SELECT s.n_nationkey FROM supplier s WHERE s.s_suppkey = ts.s_suppkey LIMIT 1)
WHERE
    ns.n_regionkey IN (SELECT r_regionkey FROM region WHERE r_name = 'Asia')
ORDER BY
    total_sales DESC;
