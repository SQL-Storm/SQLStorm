
SELECT 
    p.p_name AS part_name, 
    s.s_name AS supplier_name, 
    c.c_name AS customer_name,
    o.o_orderkey AS order_id,
    COUNT(l.l_orderkey) AS total_lines,
    SUM(l.l_extendedprice) AS total_price,
    MAX(l.l_shipdate) AS latest_ship_date,
    SUBSTRING(p.p_comment, 1, 10) AS short_comment,
    (SELECT COUNT(DISTINCT o2.o_orderkey) 
     FROM orders o2 
     WHERE o2.o_orderdate BETWEEN DATEADD(MONTH, -6, CURRENT_DATE) 
       AND CURRENT_DATE) AS recent_orders_count
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    lineitem l ON ps.ps_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
JOIN 
    customer c ON o.o_custkey = c.c_custkey
WHERE 
    CHAR_LENGTH(p.p_name) > 10
GROUP BY 
    p.p_name, s.s_name, c.c_name, o.o_orderkey, p.p_comment
HAVING 
    SUM(l.l_extendedprice) > 1000
ORDER BY 
    total_price DESC;
