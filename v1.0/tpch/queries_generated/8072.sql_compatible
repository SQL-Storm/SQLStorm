
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_value,
        RANK() OVER (PARTITION BY n.n_nationkey ORDER BY SUM(ps.ps_supplycost * ps.ps_availqty) DESC) AS supplier_rank
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN nation n ON s.s_nationkey = n.n_nationkey
    GROUP BY s.s_suppkey, s.s_name, n.n_nationkey
),
TopSuppliers AS (
    SELECT 
        r.r_regionkey,
        r.r_name,
        ns.n_name,
        rs.s_suppkey,
        rs.s_name,
        rs.total_supply_value
    FROM RankedSuppliers rs
    JOIN nation ns ON rs.n_nationkey = ns.n_nationkey
    JOIN region r ON ns.n_regionkey = r.r_regionkey
    WHERE rs.supplier_rank <= 3
),
OrderSummary AS (
    SELECT 
        o.o_custkey,
        COUNT(o.o_orderkey) AS total_orders,
        SUM(o.o_totalprice) AS total_spent
    FROM orders o
    GROUP BY o.o_custkey
)
SELECT 
    ts.r_name AS region_name,
    ts.n_name AS nation_name,
    ts.s_name AS supplier_name,
    os.total_orders,
    os.total_spent,
    ts.total_supply_value
FROM TopSuppliers ts
LEFT JOIN OrderSummary os ON ts.s_suppkey = os.o_custkey
ORDER BY ts.r_name, ts.n_name, ts.total_supply_value DESC;
