
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        s.s_acctbal, 
        ROW_NUMBER() OVER (PARTITION BY s.s_nationkey ORDER BY s.s_acctbal DESC) AS rank
    FROM 
        supplier s
    WHERE 
        s.s_acctbal IS NOT NULL
),
TotalOrderValue AS (
    SELECT 
        o.o_custkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_order_value
    FROM 
        orders o
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY 
        o.o_custkey
),
HighValueCustomers AS (
    SELECT 
        c.c_custkey, 
        c.c_name, 
        CASE 
            WHEN tv.total_order_value IS NULL THEN 'NO ORDERS'
            WHEN tv.total_order_value > 100000 THEN 'HIGH VALUE'
            ELSE 'REGULAR'
        END AS customer_type
    FROM 
        customer c
    LEFT JOIN 
        TotalOrderValue tv ON c.c_custkey = tv.o_custkey
),
SupplierPart AS (
    SELECT 
        ps.ps_partkey, 
        ps.ps_suppkey,
        ps.ps_availqty,
        p.p_size,
        p.p_retailprice,
        CASE 
            WHEN ps.ps_availqty < 10 THEN 'LOW STOCK'
            ELSE 'IN STOCK'
        END AS stock_status
    FROM 
        partsupp ps
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
)
SELECT 
    r.r_name AS region_name,
    n.n_name AS nation_name,
    SUM(CASE WHEN hvc.customer_type = 'HIGH VALUE' THEN tv.total_order_value ELSE 0 END) AS total_high_value_sales,
    COUNT(DISTINCT CASE WHEN sp.stock_status = 'LOW STOCK' THEN sp.ps_partkey END) AS low_stock_count,
    COUNT(DISTINCT CASE WHEN rs.rank = 1 THEN rs.s_suppkey END) AS top_supplier_count
FROM 
    region r
JOIN 
    nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN 
    HighValueCustomers hvc ON hvc.c_custkey = n.n_nationkey
LEFT JOIN 
    SupplierPart sp ON sp.ps_partkey IN (SELECT p.p_partkey FROM part p WHERE p.p_size BETWEEN 1 AND 50)
LEFT JOIN 
    RankedSuppliers rs ON n.n_nationkey = rs.s_nationkey
GROUP BY 
    r.r_name, 
    n.n_name
HAVING 
    SUM(CASE WHEN hvc.customer_type = 'HIGH VALUE' THEN tv.total_order_value ELSE 0 END) > 1000000
ORDER BY 
    region_name, 
    nation_name DESC;
