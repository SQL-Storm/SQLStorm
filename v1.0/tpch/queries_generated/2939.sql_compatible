
WITH SupplierDetails AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        n.n_name AS nation_name,
        COUNT(DISTINCT ps.ps_partkey) AS supply_count,
        SUM(ps.ps_supplycost) AS total_supply_cost
    FROM 
        supplier s
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
    LEFT JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name, s.s_acctbal, n.n_name
),
CustomerOrders AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        SUM(o.o_totalprice) AS total_spent,
        COUNT(o.o_orderkey) AS order_count
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        o.o_orderstatus = 'O'
    GROUP BY 
        c.c_custkey, c.c_name
),
LineItemDetails AS (
    SELECT 
        l.l_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS revenue,
        COUNT(l.l_linenumber) AS item_count
    FROM 
        lineitem l
    WHERE 
        l.l_shipdate >= DATE '1997-01-01' 
        AND l.l_shipdate < DATE '1998-01-01'
    GROUP BY 
        l.l_orderkey
)
SELECT 
    sd.nation_name,
    sd.s_name,
    sd.s_acctbal,
    co.total_spent,
    co.order_count,
    SUM(l.revenue) AS total_revenue,
    COUNT(DISTINCT l.l_orderkey) AS distinct_order_count,
    MAX(l.item_count) AS max_item_per_order
FROM 
    SupplierDetails sd
LEFT JOIN 
    CustomerOrders co ON sd.s_suppkey = co.c_custkey
LEFT JOIN 
    LineItemDetails l ON l.l_orderkey IN (
        SELECT o.o_orderkey 
        FROM orders o 
        WHERE o.o_custkey = co.c_custkey
    )
GROUP BY 
    sd.nation_name, sd.s_name, sd.s_acctbal, co.total_spent, co.order_count
HAVING 
    SUM(l.revenue) IS NOT NULL
ORDER BY 
    total_revenue DESC, sd.s_acctbal DESC;
