SELECT 
    p.p_name AS part_name,
    COUNT(DISTINCT ps.s_suppkey) AS supplier_count,
    SUM(ps.ps_availqty) AS total_available_quantity,
    AVG(ps.ps_supplycost) AS average_supply_cost,
    MAX(CASE WHEN LENGTH(p.p_comment) > 0 THEN LENGTH(p.p_comment) ELSE NULL END) AS max_comment_length,
    REPLACE(UPPER(p.p_type), ' ', '_') AS formatted_part_type
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    customer c ON s.s_nationkey = c.c_nationkey
JOIN 
    lineitem l ON l.l_partkey = p.p_partkey
WHERE 
    p.p_retailprice > (SELECT AVG(p2.p_retailprice) FROM part p2)
    AND s.s_acctbal > 1000
    AND l.l_shipdate BETWEEN '1996-01-01' AND '1997-12-31'
GROUP BY 
    p.p_name, p.p_type
ORDER BY 
    supplier_count DESC, total_available_quantity DESC;