
SELECT 
    p.p_name, 
    s.s_name, 
    COUNT(DISTINCT c.c_custkey) AS unique_customers, 
    SUM(l.l_quantity) AS total_quantity, 
    AVG(l.l_extendedprice) AS avg_price,
    SUBSTRING_INDEX(GROUP_CONCAT(DISTINCT CONCAT_WS(', ', c.c_name, s.s_address, s.s_phone) ORDER BY c.c_name SEPARATOR '; '), '; ', 5) AS customer_details
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
JOIN 
    customer c ON o.o_custkey = c.c_custkey
WHERE 
    p.p_name LIKE '%Steel%' 
    AND o.o_orderdate BETWEEN '1995-01-01' AND '1997-12-31'
GROUP BY 
    p.p_name, s.s_name
HAVING 
    total_quantity > 100
ORDER BY 
    unique_customers DESC, avg_price DESC;
