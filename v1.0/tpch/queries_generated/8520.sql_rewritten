WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost,
        ROW_NUMBER() OVER (PARTITION BY n.n_nationkey ORDER BY SUM(ps.ps_supplycost * ps.ps_availqty) DESC) AS rn
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
    WHERE 
        n.n_name IN (SELECT n_name FROM nation WHERE r_regionkey IN (SELECT r_regionkey FROM region WHERE r_name = 'Europe'))
    GROUP BY 
        s.s_suppkey, s.s_name, n.n_nationkey
),
TopSuppliers AS (
    SELECT 
        r.s_suppkey,
        r.s_name,
        r.total_supply_cost,
        n.n_name
    FROM 
        RankedSuppliers r
    JOIN 
        nation n ON r.rn = 1 AND s.s_nationkey = n.n_nationkey
)
SELECT 
    c.c_custkey,
    c.c_name,
    c.c_acctbal,
    ts.s_suppkey,
    ts.s_name,
    ts.total_supply_cost
FROM 
    customer c
JOIN 
    orders o ON c.c_custkey = o.o_custkey
JOIN 
    lineitem l ON o.o_orderkey = l.l_orderkey
JOIN 
    TopSuppliers ts ON l.l_suppkey = ts.s_suppkey
WHERE 
    c.c_acctbal > 10000
    AND o.o_orderdate BETWEEN '1997-01-01' AND '1997-12-31'
ORDER BY 
    ts.total_supply_cost DESC, c.c_name ASC
LIMIT 50;