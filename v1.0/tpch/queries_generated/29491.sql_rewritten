SELECT 
    CONCAT_WS(' | ', p.p_name, s.s_name, c.c_name, o.o_orderstatus, o.o_orderdate) AS combined_info,
    LENGTH(CONCAT_WS(' | ', p.p_name, s.s_name, c.c_name, o.o_orderstatus, o.o_orderdate)) AS info_length,
    SUBSTR(p.p_comment, 1, 10) AS short_comment,
    REPLACE(s.s_address, 'Street', 'St.') AS modified_address
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    customer c ON s.s_nationkey = c.c_nationkey
JOIN 
    orders o ON c.c_custkey = o.o_custkey
WHERE 
    o.o_orderdate BETWEEN '1997-01-01' AND '1997-12-31'
AND 
    LENGTH(p.p_name) > 10
ORDER BY 
    info_length DESC
LIMIT 100;