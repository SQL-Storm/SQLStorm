
WITH SupplierDetails AS (
    SELECT
        s.s_suppkey,
        s.s_name,
        s.s_nationkey,
        COUNT(DISTINCT ps.ps_partkey) AS part_count,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost,
        STRING_AGG(DISTINCT CONCAT(p.p_name, ' (', p.p_brand, ')'), '; ') AS parts_supplied
    FROM
        supplier s
    JOIN
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN
        part p ON ps.ps_partkey = p.p_partkey
    GROUP BY
        s.s_suppkey, s.s_name, s.s_nationkey
),

CustomerOrderDetails AS (
    SELECT
        c.c_custkey,
        c.c_name,
        SUM(o.o_totalprice) AS total_orders,
        COUNT(o.o_orderkey) AS order_count,
        STRING_AGG(DISTINCT CONCAT(o.o_orderstatus, ' (', o.o_orderpriority, ')'), '; ') AS order_statuses
    FROM
        customer c
    JOIN
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY
        c.c_custkey, c.c_name
)

SELECT
    rd.r_name AS region_name,
    sd.s_name AS supplier_name,
    sd.part_count,
    sd.total_supply_cost,
    cd.c_name AS customer_name,
    cd.total_orders,
    cd.order_count,
    cd.order_statuses
FROM
    region rd
JOIN
    nation n ON rd.r_regionkey = n.n_regionkey
JOIN
    supplier sd ON n.n_nationkey = sd.s_nationkey
JOIN
    partsupp ps ON sd.s_suppkey = ps.ps_suppkey
JOIN
    CustomerOrderDetails cd ON cd.c_custkey = (
        SELECT
            o.o_custkey
        FROM
            orders o
        JOIN
            lineitem l ON o.o_orderkey = l.l_orderkey
        WHERE
            l.l_partkey = ps.ps_partkey
        LIMIT 1
    )
WHERE
    sd.part_count > 5
ORDER BY
    region_name, supplier_name;
