
WITH RECURSIVE region_sales AS (
    SELECT 
        r.r_regionkey,
        r.r_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
    FROM 
        region r
    LEFT JOIN 
        nation n ON r.r_regionkey = n.n_regionkey
    LEFT JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    LEFT JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    LEFT JOIN 
        part p ON ps.ps_partkey = p.p_partkey
    LEFT JOIN 
        lineitem l ON p.p_partkey = l.l_partkey
    WHERE 
        l.l_shipdate BETWEEN DATE '1996-01-01' AND DATE '1996-12-31'
    GROUP BY 
        r.r_regionkey, r.r_name
    UNION ALL
    SELECT 
        r.r_regionkey,
        r.r_name,
        COALESCE(SUM(ol.total_sales), 0)
    FROM 
        region r
    JOIN 
        region_sales ol ON r.r_regionkey = ol.r_regionkey
    WHERE 
        ol.total_sales > 0
    GROUP BY 
        r.r_regionkey, r.r_name
),
customer_orders AS (
    SELECT 
        c.c_custkey,
        COUNT(o.o_orderkey) AS order_count,
        AVG(o.o_totalprice) AS avg_order_value
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey
    HAVING 
        COUNT(o.o_orderkey) != 0
),
ranked_sales AS (
    SELECT 
        r.r_name,
        rs.total_sales,
        ROW_NUMBER() OVER (ORDER BY rs.total_sales DESC) AS sales_rank
    FROM 
        region_sales rs
    JOIN 
        region r ON rs.r_regionkey = r.r_regionkey
),
suspicious_orders AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COUNT(o.o_orderkey) AS suspicious_order_count
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        o.o_orderstatus = 'F' AND 
        (o.o_totalprice IS NULL OR o.o_totalprice < 0)
    GROUP BY 
        c.c_custkey, c.c_name
    HAVING 
        COUNT(o.o_orderkey) > 5
)
SELECT 
    r.r_name,
    rs.total_sales,
    COALESCE(co.order_count, 0) AS customer_order_count,
    COALESCE(co.avg_order_value, 0) AS average_order_value,
    so.suspicious_order_count
FROM 
    ranked_sales rs
LEFT JOIN 
    customer_orders co ON co.order_count > 10
LEFT JOIN 
    suspicious_orders so ON so.c_custkey = (SELECT c.c_custkey FROM customer c WHERE c.c_name LIKE '%Sup%' LIMIT 1)
WHERE 
    rs.sales_rank <= 5
ORDER BY 
    rs.total_sales DESC;
