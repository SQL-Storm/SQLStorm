
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_nationkey,
        RANK() OVER (PARTITION BY s.s_nationkey ORDER BY s.s_acctbal DESC) AS rn
    FROM supplier s
),
SupplierDetails AS (
    SELECT 
        r.r_name AS region_name,
        n.n_name AS nation_name,
        rs.s_name AS supplier_name,
        rs.s_acctbal
    FROM RankedSuppliers rs
    JOIN nation n ON rs.s_nationkey = n.n_nationkey
    JOIN region r ON n.n_regionkey = r.r_regionkey
    WHERE rs.rn <= 3
),
TotalOrderAmounts AS (
    SELECT 
        c.c_custkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_amount,
        COUNT(DISTINCT o.o_orderkey) AS order_count
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY c.c_custkey
),
SupplierOrders AS (
    SELECT 
        sd.region_name,
        sd.nation_name,
        sd.supplier_name,
        SO.total_amount,
        SO.order_count
    FROM SupplierDetails sd
    LEFT JOIN TotalOrderAmounts SO ON sd.supplier_name LIKE '%' || SUBSTRING(CAST(SO.total_amount AS TEXT) FROM '(\d+)$')
)
SELECT 
    region_name,
    nation_name,
    supplier_name,
    COALESCE(total_amount, 0) AS total_amount,
    COALESCE(order_count, 0) AS order_count
FROM SupplierOrders
WHERE COALESCE(total_amount, 0) > 1000
ORDER BY region_name, nation_name, total_amount DESC;
