
WITH SupplierSales AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        lineitem l ON ps.ps_partkey = l.l_partkey
    GROUP BY 
        s.s_suppkey, s.s_name
), 

TopSuppliers AS (
    SELECT 
        ss.s_suppkey, 
        ss.s_name, 
        ss.total_sales
    FROM 
        SupplierSales ss
    ORDER BY 
        ss.total_sales DESC
    LIMIT 5
)

SELECT 
    rs.r_name AS region_name, 
    ns.n_name AS nation_name, 
    ts.s_name AS supplier_name, 
    ts.total_sales
FROM 
    region rs
JOIN 
    nation ns ON rs.r_regionkey = ns.n_regionkey
JOIN 
    TopSuppliers ts ON ns.n_nationkey = ts.s_nationkey
WHERE 
    ts.total_sales > 100000
ORDER BY 
    region_name, nation_name, ts.total_sales DESC;
