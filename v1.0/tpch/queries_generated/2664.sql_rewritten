WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        ROW_NUMBER() OVER (PARTITION BY n.n_name ORDER BY s.s_acctbal DESC) AS rank,
        n.n_name AS nation_name
    FROM 
        supplier s
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
),
TotalSales AS (
    SELECT 
        l.l_suppkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
    FROM 
        lineitem l
    GROUP BY 
        l.l_suppkey
),
FilteredOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_custkey,
        o.o_totalprice,
        o.o_orderdate
    FROM 
        orders o
    WHERE 
        o.o_orderdate BETWEEN '1997-01-01' AND '1997-12-31'
)
SELECT 
    ps.ps_partkey,
    p.p_name,
    p.p_brand,
    p.p_retailprice,
    COALESCE(ts.total_sales, 0) AS total_sales,
    COUNT(DISTINCT fo.o_orderkey) AS order_count,
    n.n_name AS supplier_nation,
    ss.s_name AS top_supplier
FROM 
    part p
LEFT JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
LEFT JOIN 
    RankedSuppliers ss ON ps.ps_suppkey = ss.s_suppkey AND ss.rank = 1
LEFT JOIN 
    TotalSales ts ON ts.l_suppkey = ps.ps_suppkey
LEFT JOIN 
    FilteredOrders fo ON fo.o_orderkey = (SELECT l2.l_orderkey
                                            FROM lineitem l2
                                            WHERE l2.l_partkey = p.p_partkey AND l2.l_suppkey = ss.s_suppkey
                                            ORDER BY l2.l_orderkey DESC LIMIT 1)
JOIN 
    nation n ON ss.nation_name = n.n_name
GROUP BY 
    ps.ps_partkey, p.p_name, p.p_brand, p.p_retailprice, n.n_name, ss.s_name
HAVING 
    COUNT(DISTINCT fo.o_orderkey) > 0
ORDER BY 
    total_sales DESC, p.p_retailprice ASC;