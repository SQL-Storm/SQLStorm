
SELECT 
    CONCAT('Supplier ', s.s_name, ' from ', n.n_name, ' supplies ', p.p_name) AS supplier_info,
    REPLACE(p.p_type, ' ', '-') AS part_type,
    LENGTH(p.p_comment) AS comment_length,
    UPPER(s.s_name) AS supplier_name_upper,
    SUBSTRING(p.p_comment, 1, 20) AS comment_excerpt,
    CHAR_LENGTH(s.s_address) AS address_length,
    RANK() OVER (PARTITION BY n.n_name ORDER BY p.p_retailprice DESC) AS price_rank
FROM 
    supplier s
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
WHERE 
    POSITION('Quality' IN p.p_comment) > 0
    AND n.n_name IN (SELECT r_name FROM region WHERE r_regionkey IN (1, 2, 3))
GROUP BY 
    s.s_name, n.n_name, p.p_name, p.p_type, p.p_comment, s.s_address
ORDER BY 
    supplier_info, part_type;
