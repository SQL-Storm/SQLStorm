
WITH RankedOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_totalprice,
        RANK() OVER (PARTITION BY o.o_orderstatus ORDER BY o.o_totalprice DESC) AS order_rank,
        o.o_orderdate,
        SUM(l.l_quantity) OVER (PARTITION BY o.o_orderkey) AS total_quantity
    FROM 
        orders o
    LEFT JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderdate BETWEEN '1997-01-01' AND '1997-10-01'
),
TopSuppliers AS (
    SELECT 
        ps.ps_suppkey,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS supplier_value
    FROM 
        partsupp ps
    JOIN 
        supplier s ON ps.ps_suppkey = s.s_suppkey
    GROUP BY 
        ps.ps_suppkey
    HAVING 
        SUM(ps.ps_supplycost * ps.ps_availqty) > (
            SELECT AVG(ps_supplycost * ps_availqty) FROM partsupp
        )
),
CustomerRegion AS (
    SELECT 
        c.c_custkey,
        n.n_name,
        r.r_name,
        ROW_NUMBER() OVER (PARTITION BY n.n_name ORDER BY c.c_acctbal DESC) AS rn
    FROM 
        customer c
    JOIN 
        nation n ON c.c_nationkey = n.n_nationkey
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
)
SELECT 
    COALESCE(CAST(c.r_name AS VARCHAR), 'Unknown') AS region_name,
    COUNT(DISTINCT COALESCE(o.o_orderkey, -1)) AS orders_count,
    SUM(o.o_totalprice) AS total_value,
    SUM(COALESCE(NULLIF(o.o_totalprice, 0), 1)) AS safe_total,
    (SELECT COUNT(*) FROM lineitem l JOIN RankedOrders ro ON l.l_orderkey = ro.o_orderkey WHERE ro.total_quantity > 100) AS high_quantity_lineitems,
    (SELECT COUNT(*) FROM TopSuppliers ts LEFT JOIN RankedOrders ro ON ts.ps_suppkey = ro.o_orderkey) AS valid_supplier_orders
FROM 
    CustomerRegion c
LEFT JOIN 
    RankedOrders o ON c.c_custkey = o.o_orderkey
GROUP BY 
    c.r_name
HAVING 
    COUNT(DISTINCT o.o_orderkey) > 5 AND SUM(o.o_totalprice) > 500
UNION ALL
SELECT 
    r.r_name,
    COUNT(DISTINCT c.c_custkey) AS customer_count,
    SUM(COALESCE(o.o_totalprice, 0)) AS total_sales,
    SUM(CASE WHEN l.l_discount > 0 THEN l.l_extendedprice ELSE 0 END) AS discounted_sales
FROM 
    region r
LEFT JOIN 
    nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN 
    customer c ON n.n_nationkey = c.c_nationkey
LEFT JOIN 
    orders o ON c.c_custkey = o.o_custkey
LEFT JOIN 
    lineitem l ON o.o_orderkey = l.l_orderkey
WHERE 
    o.o_orderstatus = 'F'
GROUP BY 
    r.r_name
ORDER BY 
    total_sales DESC, customer_count ASC
LIMIT 10;
