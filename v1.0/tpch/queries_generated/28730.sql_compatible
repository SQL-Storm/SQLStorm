
WITH RankedParts AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        p.p_brand,
        p.p_type,
        p.p_retailprice,
        p.p_comment,
        ROW_NUMBER() OVER (PARTITION BY p.p_brand, p.p_type ORDER BY p.p_retailprice DESC) AS BrandTypeRank
    FROM part p
    WHERE p.p_retailprice > 0
),
NationalSuppliers AS (
    SELECT 
        s.s_nationkey,
        COUNT(DISTINCT s.s_suppkey) AS SupplierCount
    FROM supplier s
    JOIN nation n ON s.s_nationkey = n.n_nationkey
    GROUP BY s.s_nationkey
),
CustomerOrders AS (
    SELECT 
        c.c_custkey,
        COUNT(o.o_orderkey) AS TotalOrders,
        SUM(o.o_totalprice) AS TotalSpent
    FROM customer c
    LEFT JOIN orders o ON c.c_custkey = o.o_custkey
    GROUP BY c.c_custkey
)
SELECT 
    rp.p_name,
    rp.p_brand,
    rp.p_type,
    rp.p_retailprice,
    ns.SupplierCount,
    co.TotalOrders,
    co.TotalSpent
FROM RankedParts rp
LEFT JOIN NationalSuppliers ns ON ns.s_nationkey = (
    SELECT ps.ps_nationkey
    FROM partsupp ps
    WHERE ps.ps_partkey = rp.p_partkey
    ORDER BY ps.ps_supplycost DESC
    LIMIT 1
)
LEFT JOIN CustomerOrders co ON co.TotalOrders > 0
WHERE rp.BrandTypeRank <= 5
ORDER BY rp.p_retailprice DESC, ns.SupplierCount DESC;
