WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost,
        ROW_NUMBER() OVER (PARTITION BY p.p_type ORDER BY SUM(ps.ps_supplycost * ps.ps_availqty) DESC) AS rank
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
    GROUP BY 
        s.s_suppkey, s.s_name, p.p_type
),
OrderSummary AS (
    SELECT 
        o.o_orderkey, 
        COUNT(l.l_linenumber) AS total_lines, 
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_value
    FROM 
        orders o
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderdate >= '1996-01-01' AND o.o_orderdate < '1997-01-01'
    GROUP BY 
        o.o_orderkey
)
SELECT 
    r.supp_name,
    r.total_supply_cost,
    o.o_orderkey,
    o.total_lines,
    o.total_value
FROM 
    RankedSuppliers r
FULL OUTER JOIN 
    OrderSummary o ON r.rank = 1 
WHERE 
    r.total_supply_cost IS NOT NULL OR o.total_value IS NOT NULL
ORDER BY 
    r.total_supply_cost DESC, o.total_value DESC;