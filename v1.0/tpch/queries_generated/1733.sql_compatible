
WITH RankedSuppliers AS (
    SELECT
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        RANK() OVER (PARTITION BY n.n_name ORDER BY s.s_acctbal DESC) AS rn
    FROM
        supplier s
    JOIN
        nation n ON s.s_nationkey = n.n_nationkey
    WHERE
        s.s_acctbal IS NOT NULL
),
HighValueOrders AS (
    SELECT
        o.o_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM
        orders o
    JOIN
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE
        o.o_orderstatus = 'F'
        AND l.l_shipdate BETWEEN DATE '1996-01-01' AND DATE '1996-12-31'
    GROUP BY
        o.o_orderkey
)
SELECT
    p.p_partkey,
    p.p_name,
    p.p_brand,
    COALESCE(SUM(l.l_quantity), 0) AS total_quantity,
    COALESCE(AVG(l.l_extendedprice), 0) AS avg_extendedprice,
    COALESCE(AVG(l.l_discount), 0) AS avg_discount,
    COALESCE(r.s_supname, 'No Supplier') AS supplier_name,
    r.rn AS supplier_rank
FROM
    part p
LEFT JOIN
    lineitem l ON p.p_partkey = l.l_partkey
LEFT JOIN (
    SELECT
        DISTINCT s.s_suppkey AS s_supkey,
        s.s_name AS s_supname,
        n.n_name AS nation_name
    FROM
        RankedSuppliers s
    JOIN
        nation n ON s.s_nationkey = n.n_nationkey
    WHERE
        s.rn <= 3
) AS r ON l.l_suppkey = r.s_supkey
WHERE
    EXISTS (
        SELECT 1
        FROM HighValueOrders h
        WHERE h.o_orderkey = l.l_orderkey
    )
GROUP BY
    p.p_partkey, p.p_name, p.p_brand, r.s_supname, r.rn
ORDER BY
    total_quantity DESC, avg_extendedprice DESC;
