
SELECT 
    LOWER(SUBSTR(p.p_name, 1, 20)) AS short_name,
    CONCAT(UPPER(p.p_brand), ' ', r.r_name) AS brand_region,
    TRIM(REPLACE(REPLACE(p.p_comment, ' ', ''), '.', '')) AS cleaned_comment,
    COUNT(DISTINCT s.s_suppkey) AS supplier_count,
    MAX(p.p_retailprice) AS max_price,
    AVG(p.p_size) AS avg_size
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
WHERE 
    p.p_type LIKE '%metal%'
    AND s.s_acctbal > 5000
GROUP BY 
    LOWER(SUBSTR(p.p_name, 1, 20)), 
    CONCAT(UPPER(p.p_brand), ' ', r.r_name), 
    TRIM(REPLACE(REPLACE(p.p_comment, ' ', ''), '.', '')), 
    AVG(p.p_size)
HAVING 
    AVG(p.p_size) > 10
ORDER BY 
    MAX(p.p_retailprice) DESC
LIMIT 100;
