
WITH SupplierStats AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost,
        AVG(s.s_acctbal) AS average_acctbal,
        COUNT(DISTINCT p.p_partkey) AS part_count
    FROM 
        supplier s
        JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
        JOIN part p ON ps.ps_partkey = p.p_partkey
    GROUP BY 
        s.s_suppkey, s.s_name
),
OrderStats AS (
    SELECT 
        o.o_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_order_value,
        COUNT(DISTINCT l.l_orderkey) AS line_item_count
    FROM 
        orders o
        JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY 
        o.o_orderkey
),
HighValueOrders AS (
    SELECT 
        os.o_orderkey,
        os.total_order_value,
        os.line_item_count,
        ROW_NUMBER() OVER (ORDER BY os.total_order_value DESC) AS order_rank
    FROM 
        OrderStats os
    WHERE 
        os.total_order_value > 10000
),
RegionNationalStats AS (
    SELECT 
        r.r_regionkey,
        n.n_name,
        COUNT(DISTINCT s.s_suppkey) AS supplier_count,
        SUM(ss.total_supply_cost) AS total_cost
    FROM 
        region r
        JOIN nation n ON r.r_regionkey = n.n_regionkey
        LEFT JOIN SupplierStats ss ON n.n_nationkey = ss.s_suppkey
    GROUP BY 
        r.r_regionkey, n.n_name
)
SELECT 
    rns.n_name, 
    rns.supplier_count, 
    rns.total_cost, 
    hvo.total_order_value,
    hvo.line_item_count
FROM 
    RegionNationalStats rns
LEFT JOIN 
    HighValueOrders hvo ON rns.supplier_count > 5
WHERE 
    rns.total_cost IS NOT NULL OR hvo.total_order_value IS NOT NULL
ORDER BY 
    rns.total_cost DESC, 
    hvo.total_order_value DESC;
