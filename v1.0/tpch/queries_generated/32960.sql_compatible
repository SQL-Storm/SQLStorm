
WITH RECURSIVE OrderHierarchy AS (
    SELECT o_orderkey, o_totalprice, o_orderdate, 1 AS level
    FROM orders
    WHERE o_orderstatus = 'O'
    
    UNION ALL
    
    SELECT o.o_orderkey, o.o_totalprice, o.o_orderdate, oh.level + 1
    FROM orders o
    JOIN OrderHierarchy oh ON o.o_custkey = (
        SELECT c.c_custkey
        FROM customer c
        JOIN lineitem l ON c.c_custkey = (SELECT o.o_custkey FROM orders o WHERE o.o_orderkey = l.l_orderkey)
        WHERE l.l_partkey IN (
            SELECT ps.ps_partkey
            FROM partsupp ps
            WHERE ps.ps_availqty > 0
        )
        LIMIT 1
    )
    WHERE o.o_orderstatus != 'O'
),
SupplierStats AS (
    SELECT s.s_suppkey, s.s_name, SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY s.s_suppkey, s.s_name
),
LineItemStats AS (
    SELECT l.l_partkey, 
           SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
           AVG(l.l_tax) AS avg_tax
    FROM lineitem l
    GROUP BY l.l_partkey
),
RegionCustomer AS (
    SELECT n.n_name AS nation_name, 
           r.r_name AS region_name,
           COUNT(DISTINCT c.c_custkey) AS customer_count
    FROM nation n
    JOIN region r ON n.n_regionkey = r.r_regionkey
    JOIN customer c ON n.n_nationkey = c.c_nationkey
    GROUP BY n.n_name, r.r_name
)
SELECT 
    r.region_name, 
    rc.nation_name,
    COUNT(DISTINCT o.o_orderkey) AS order_count,
    SUM(COALESCE(l.total_revenue, 0)) AS total_revenue,
    SUM(ss.total_supply_cost) AS supplier_total_cost
FROM OrderHierarchy o
LEFT JOIN LineItemStats l ON o.o_orderkey = l.l_partkey
JOIN RegionCustomer rc ON rc.nation_name = (SELECT n.n_name FROM nation n WHERE n.n_nationkey = (SELECT c.c_nationkey FROM customer c WHERE c.c_custkey = o.o_custkey))
LEFT JOIN SupplierStats ss ON ss.s_suppkey = (SELECT ps.ps_suppkey FROM partsupp ps WHERE ps.ps_partkey = l.l_partkey)
WHERE o.o_totalprice NOT BETWEEN 1000 AND 5000
GROUP BY r.region_name, rc.nation_name
ORDER BY order_count DESC, total_revenue DESC
LIMIT 10;
