WITH supplier_totals AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name
),
customer_orders AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COUNT(o.o_orderkey) AS order_count,
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey AND o.o_orderstatus = 'O'
    GROUP BY 
        c.c_custkey, c.c_name
),
line_item_stats AS (
    SELECT 
        l.l_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_line_revenue,
        COUNT(l.l_linenumber) AS line_count,
        AVG(l.l_quantity) AS avg_quantity
    FROM 
        lineitem l
    WHERE 
        l.l_returnflag = 'N'
    GROUP BY 
        l.l_orderkey
),
enhanced_line_items AS (
    SELECT 
        l.l_orderkey,
        l.l_partkey,
        li.total_line_revenue,
        li.line_count,
        li.avg_quantity,
        p.p_name,
        s.s_name,
        ROW_NUMBER() OVER (PARTITION BY l.l_orderkey ORDER BY li.total_line_revenue DESC) AS rn
    FROM 
        lineitem l
    JOIN 
        line_item_stats li ON l.l_orderkey = li.l_orderkey
    JOIN 
        part p ON l.l_partkey = p.p_partkey
    LEFT JOIN 
        partsupp ps ON p.p_partkey = ps.ps_partkey
    LEFT JOIN 
        supplier s ON ps.ps_suppkey = s.s_suppkey
)
SELECT 
    cu.c_name,
    cu.order_count,
    cu.total_spent,
    COALESCE(st.total_supply_cost, 0) AS total_supply_cost,
    ei.l_orderkey,
    ei.p_name,
    ei.total_line_revenue,
    ei.line_count,
    ei.avg_quantity
FROM 
    customer_orders cu
LEFT JOIN 
    supplier_totals st ON cu.c_custkey = (SELECT c.c_custkey FROM customer c WHERE c.c_nationkey = (SELECT n.n_nationkey FROM nation n WHERE n.n_name = 'USA'))
LEFT JOIN 
    enhanced_line_items ei ON ei.l_orderkey IN (SELECT o.o_orderkey FROM orders o WHERE o.o_custkey = cu.c_custkey AND o.o_orderdate >= '1996-01-01')
WHERE 
    cu.total_spent > (
        SELECT AVG(total_spent) FROM customer_orders
    )
ORDER BY 
    cu.total_spent DESC, ei.total_line_revenue DESC;