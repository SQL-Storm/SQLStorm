
WITH supplier_part_info AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        p.p_name,
        p.p_brand,
        p.p_type,
        p.p_comment,
        CONCAT(s.s_name, ' supplies ', p.p_name, ' with brand ', p.p_brand) AS supply_info
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
),
customer_order_info AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        o.o_orderkey,
        o.o_orderdate,
        o.o_totalprice,
        CONCAT(c.c_name, ' placed order ', o.o_orderkey, ' on ', o.o_orderdate) AS order_info
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
),
order_line_info AS (
    SELECT 
        o.o_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_line_price,
        COUNT(l.l_orderkey) AS line_count
    FROM 
        lineitem l
    JOIN 
        orders o ON l.l_orderkey = o.o_orderkey
    GROUP BY 
        o.o_orderkey
)
SELECT 
    spi.supply_info,
    coi.order_info,
    oli.total_line_price,
    oli.line_count
FROM 
    supplier_part_info spi
JOIN 
    customer_order_info coi ON spi.s_suppkey = coi.c_custkey
JOIN 
    order_line_info oli ON coi.o_orderkey = oli.o_orderkey
WHERE 
    oli.total_line_price > 1000
ORDER BY 
    spi.s_name, coi.o_orderdate DESC;
