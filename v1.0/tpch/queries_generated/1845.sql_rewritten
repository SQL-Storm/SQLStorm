WITH SupplierStats AS (
    SELECT 
        s.s_nationkey,
        COUNT(DISTINCT s.s_suppkey) AS supplier_count,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY s.s_nationkey
), 
CustomerRank AS (
    SELECT 
        c.c_nationkey,
        c.c_custkey,
        RANK() OVER (PARTITION BY c.c_nationkey ORDER BY c.c_acctbal DESC) AS cust_rank
    FROM customer c
), 
OrderSummary AS (
    SELECT 
        o.o_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_order_value
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE o.o_orderdate >= DATE '1997-01-01'
    GROUP BY o.o_orderkey
)
SELECT
    n.n_name,
    COALESCE(ss.supplier_count, 0) AS total_suppliers,
    COALESCE(ss.total_supply_cost, 0) AS total_cost_of_suppliers,
    COUNT(DISTINCT cr.c_custkey) AS total_customers,
    AVG(os.total_order_value) AS average_order_value
FROM nation n
LEFT JOIN SupplierStats ss ON n.n_nationkey = ss.s_nationkey
LEFT JOIN CustomerRank cr ON n.n_nationkey = cr.c_nationkey AND cr.cust_rank <= 10
LEFT JOIN OrderSummary os ON os.o_orderkey IN (
    SELECT o.o_orderkey
    FROM orders o
    JOIN customer c ON o.o_custkey = c.c_custkey
    WHERE c.c_nationkey = n.n_nationkey
)
GROUP BY n.n_name
ORDER BY total_suppliers DESC, average_order_value DESC;