
SELECT 
    p.p_partkey,
    p.p_name,
    ps.ps_supplycost,
    CONCAT('Supplier: ', s.s_name, ', Price: ', FORMAT(ps.ps_supplycost, 2), ', Comment: ', ps.ps_comment) AS supplier_info,
    CASE
        WHEN LENGTH(p.p_name) > 30 THEN SUBSTRING(p.p_name, 1, 27) || '...'
        ELSE p.p_name
    END AS truncated_p_name,
    REGEXP_REPLACE(p.p_comment, '[^a-zA-Z0-9 ]', '') AS clean_comment
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
WHERE 
    p.p_retailprice > 100.00
AND 
    s.s_nationkey IN (SELECT n.n_nationkey FROM nation n WHERE n.n_regionkey = (SELECT r.r_regionkey FROM region r WHERE r.r_name = 'Europe'))
GROUP BY
    p.p_partkey,
    p.p_name,
    ps.ps_supplycost,
    supplier_info,
    truncated_p_name,
    clean_comment
ORDER BY 
    ps.ps_supplycost DESC
LIMIT 10;
