
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        s.n_nationkey,
        RANK() OVER (PARTITION BY s.n_nationkey ORDER BY s.s_acctbal DESC) AS rank
    FROM 
        supplier s
),
RecentOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_custkey,
        o.o_totalprice,
        o.o_orderdate,
        ROW_NUMBER() OVER (PARTITION BY o.o_orderstatus ORDER BY o.o_orderdate DESC) AS row_num
    FROM 
        orders o
    WHERE 
        o.o_orderdate >= DATEADD(month, -6, '1998-10-01')
),
AggregateLineItems AS (
    SELECT 
        l.l_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM 
        lineitem l
    WHERE 
        l.l_shipdate BETWEEN '1997-01-01' AND '1997-12-31'
    GROUP BY 
        l.l_orderkey
),
TopRegions AS (
    SELECT 
        r.r_regionkey,
        r.r_name,
        COUNT(n.n_nationkey) AS nation_count
    FROM 
        region r
    LEFT JOIN 
        nation n ON r.r_regionkey = n.n_regionkey
    GROUP BY 
        r.r_regionkey, r.r_name
    HAVING 
        COUNT(n.n_nationkey) > 1
),
SuspiciousOrders AS (
    SELECT
        o.o_orderkey,
        o.o_custkey,
        COALESCE(li.total_revenue, 0) AS total_revenue
    FROM 
        RecentOrders o
    LEFT JOIN 
        AggregateLineItems li ON o.o_orderkey = li.l_orderkey
    WHERE 
        o.o_totalprice > 1000 AND 
        (o.o_orderstatus = 'F' OR o.o_orderstatus IS NULL)
)
SELECT 
    s.s_name AS supplier_name,
    s.s_acctbal AS supplier_balance,
    r.r_name AS region_name,
    o.o_orderkey AS order_id,
    SUM(l.l_extendedprice) AS total_line_item_value
FROM 
    RankedSuppliers s
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    lineitem l ON l.l_partkey = p.p_partkey
JOIN 
    SuspiciousOrders o ON l.l_orderkey = o.o_orderkey
JOIN 
    TopRegions r ON s.n_nationkey = (SELECT n.n_nationkey FROM nation n WHERE n.n_regionkey = r.r_regionkey)
WHERE 
    p.p_retailprice BETWEEN 10 AND COALESCE((SELECT MAX(p2.p_retailprice) FROM part p2 WHERE p2.p_size < 10), 100)
GROUP BY 
    s.s_name, s.s_acctbal, r.r_name, o.o_orderkey
HAVING 
    SUM(l.l_discount) < 0.1 * SUM(l.l_extendedprice)
ORDER BY 
    r.r_name, s.s_acctbal DESC, total_line_item_value ASC
FETCH FIRST 50 ROWS ONLY;
