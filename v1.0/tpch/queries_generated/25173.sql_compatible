
SELECT 
    CONCAT('Supplier: ', s.s_name, ' (', s.s_nationkey, ') - ', 
           'Total Parts Supplied: ', COUNT(DISTINCT ps.ps_partkey), ' Items') AS Supplier_Info,
    STRING_AGG(DISTINCT CONCAT('Part Name: ', p.p_name, ', Type: ', p.p_type) ORDER BY p.p_name) AS Supplied_Parts,
    SUM(l.l_extendedprice * (1 - l.l_discount)) AS Total_Revenue
FROM 
    supplier s
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
WHERE 
    s.s_acctbal > (SELECT AVG(s_acctbal) FROM supplier)
    AND l.l_linenumber IN (SELECT MAX(l.l_linenumber) FROM lineitem GROUP BY l.l_orderkey)
GROUP BY 
    s.s_suppkey, s.s_name, s.s_nationkey
HAVING 
    Total_Revenue > 10000
ORDER BY 
    Total_Revenue DESC
LIMIT 10;
