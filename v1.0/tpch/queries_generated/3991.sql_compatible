
WITH TotalSales AS (
    SELECT 
        l.l_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
    FROM 
        lineitem l
    WHERE 
        l.l_shipdate >= DATE '1997-01-01' AND l.l_shipdate < DATE '1998-01-01'
    GROUP BY 
        l.l_orderkey
),
SupplierSales AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_sales
    FROM 
        supplier s
    LEFT JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name
),
HighValueCustomers AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        SUM(o.o_totalprice) AS total_orders
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
    HAVING 
        SUM(o.o_totalprice) > 10000
),
OrderDetails AS (
    SELECT 
        o.o_orderkey,
        od.l_partkey,
        od.l_quantity,
        od.l_extendedprice,
        ROW_NUMBER() OVER (PARTITION BY o.o_orderkey ORDER BY od.l_linenumber) AS rn,
        o.o_custkey
    FROM 
        orders o
    JOIN 
        lineitem od ON o.o_orderkey = od.l_orderkey
)
SELECT 
    n.n_name AS nation_name,
    s.s_name AS supplier_name,
    COUNT(DISTINCT od.o_orderkey) AS orders_count,
    SUM(od.l_extendedprice) AS total_order_value,
    SUM(ts.total_sales) AS year_total_sales,
    SUM(ss.total_supply_sales) AS year_total_supply_sales,
    COALESCE(SUM(hv.total_orders), 0) AS high_value_customers_orders
FROM 
    nation n
LEFT JOIN 
    supplier s ON n.n_nationkey = s.s_nationkey
LEFT JOIN 
    OrderDetails od ON s.s_suppkey = od.l_suppkey
LEFT JOIN 
    TotalSales ts ON od.o_orderkey = ts.l_orderkey
LEFT JOIN 
    SupplierSales ss ON s.s_suppkey = ss.s_suppkey
LEFT JOIN 
    HighValueCustomers hv ON hv.c_custkey = od.o_custkey
WHERE 
    n.n_name IS NOT NULL 
    AND (ss.total_supply_sales IS NULL OR ss.total_supply_sales > 50000)
GROUP BY 
    n.n_name, s.s_name
ORDER BY 
    total_order_value DESC, orders_count DESC
LIMIT 100;
