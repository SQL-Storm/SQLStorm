
WITH RankedOrders AS (
    SELECT
        o.o_orderkey,
        c.c_name,
        o.o_orderdate,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
        ROW_NUMBER() OVER (PARTITION BY c.c_nationkey ORDER BY SUM(l.l_extendedprice * (1 - l.l_discount)) DESC) AS revenue_rank
    FROM
        orders o
    JOIN
        customer c ON o.o_custkey = c.c_custkey
    JOIN
        lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY
        o.o_orderkey, c.c_name, o.o_orderdate, c.c_nationkey
),
TopCustomers AS (
    SELECT
        r.r_name AS region_name,
        rc.c_name AS customer_name,
        rc.total_revenue
    FROM
        RankedOrders rc
    JOIN
        nation n ON rc.c_nationkey = n.n_nationkey
    JOIN
        region r ON n.n_regionkey = r.r_regionkey
    WHERE
        rc.revenue_rank <= 5
)
SELECT
    region_name,
    ARRAY_AGG(customer_name) AS top_customers,
    SUM(total_revenue) AS total_revenue_per_region
FROM
    TopCustomers
GROUP BY
    region_name
ORDER BY
    total_revenue_per_region DESC;
