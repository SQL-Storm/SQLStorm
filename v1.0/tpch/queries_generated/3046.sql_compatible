
WITH RegionalSales AS (
    SELECT 
        r.r_name AS region_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales,
        COUNT(DISTINCT o.o_orderkey) AS order_count
    FROM 
        region r
    JOIN 
        nation n ON r.r_regionkey = n.n_regionkey
    JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
    JOIN 
        lineitem l ON p.p_partkey = l.l_partkey
    JOIN 
        orders o ON l.l_orderkey = o.o_orderkey
    GROUP BY 
        r.r_name
),
CustomerPerformance AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        SUM(o.o_totalprice) AS total_spent,
        COUNT(o.o_orderkey) AS total_orders,
        ROW_NUMBER() OVER (ORDER BY SUM(o.o_totalprice) DESC) AS spending_rank
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
),
TopCustomers AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        cp.total_spent,
        cp.total_orders
    FROM 
        CustomerPerformance cp
    JOIN 
        customer c ON cp.c_custkey = c.c_custkey
    WHERE 
        cp.spending_rank <= 10
),
PNSales AS (
    SELECT 
        p.p_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS pn_total_sales
    FROM 
        part p
    JOIN 
        lineitem l ON p.p_partkey = l.l_partkey
    WHERE 
        p.p_retailprice > (SELECT AVG(p2.p_retailprice) FROM part p2 WHERE p2.p_size < 20)
    GROUP BY 
        p.p_name
)
SELECT 
    r.region_name,
    tc.c_name AS top_customer_name,
    tc.total_spent,
    tc.total_orders,
    COALESCE(ps.pn_total_sales, 0) AS pn_total_sales,
    COALESCE(ps.pn_total_sales, 0) AS pn_sales_fallback
FROM 
    RegionalSales r
JOIN 
    TopCustomers tc ON r.region_name = tc.top_customer_name 
LEFT JOIN 
    PNSales ps ON ps.p_name = tc.c_name 
WHERE 
    tc.total_spent > (
        SELECT AVG(total_spent) FROM CustomerPerformance
    )
ORDER BY 
    r.region_name, tc.total_spent DESC;
