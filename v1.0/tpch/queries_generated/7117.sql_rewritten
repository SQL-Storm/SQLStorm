WITH top_suppliers AS (
    SELECT s.s_suppkey, s.s_name, SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY s.s_suppkey, s.s_name
    ORDER BY total_supply_cost DESC
    LIMIT 10
),
customer_order_summary AS (
    SELECT c.c_custkey, c.c_name, COUNT(o.o_orderkey) AS order_count, SUM(o.o_totalprice) AS total_spent
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    WHERE o.o_orderdate >= '1997-01-01' AND o.o_orderdate < '1998-01-01'
    GROUP BY c.c_custkey, c.c_name
    HAVING total_spent > 10000
),
lineitem_summary AS (
    SELECT l.l_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS net_revenue
    FROM lineitem l
    WHERE l.l_shipdate >= '1997-01-01' AND l.l_shipdate < '1998-01-01'
    GROUP BY l.l_orderkey
),
overall_summary AS (
    SELECT co.c_custkey, co.c_name, SUM(ls.net_revenue) AS total_revenue
    FROM customer_order_summary co
    JOIN lineitem_summary ls ON co.order_count > 0
    GROUP BY co.c_custkey, co.c_name
)
SELECT ts.s_name, os.c_name, os.total_revenue
FROM top_suppliers ts
JOIN overall_summary os ON os.total_revenue > 5000
ORDER BY ts.total_supply_cost DESC, os.total_revenue DESC;