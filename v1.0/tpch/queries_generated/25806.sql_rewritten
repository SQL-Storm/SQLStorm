SELECT
    CONCAT('Supplier: ', s_name) AS supplier_info,
    CONCAT('Part: ', p_name, ' (', p_brand, ')') AS part_info,
    CONCAT('Order: ', o_orderkey, ' (', o_orderstatus, ')') AS order_info,
    SUM(l_quantity) AS total_quantity,
    AVG(l_extendedprice * (1 - l_discount)) AS avg_price,
    COUNT(DISTINCT o_custkey) AS unique_customers,
    STRING_AGG(DISTINCT c_phone, ', ') AS customer_phones
FROM
    supplier s
JOIN
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN
    part p ON ps.ps_partkey = p.p_partkey
JOIN
    lineitem l ON p.p_partkey = l.l_partkey
JOIN
    orders o ON l.l_orderkey = o.o_orderkey
JOIN
    customer c ON o.o_custkey = c.c_custkey
WHERE
    s_name LIKE 'Supplier%' AND
    p_type IN ('Type1', 'Type2') AND
    o_orderdate BETWEEN '1997-01-01' AND '1997-12-31'
GROUP BY
    s.s_suppkey, p.p_partkey, o.o_orderkey
HAVING
    SUM(l_quantity) > 100
ORDER BY
    total_quantity DESC, avg_price ASC;