
SELECT 
    p.p_name,
    s.s_name,
    SUBSTRING_INDEX(s.s_address, ' ', 2) AS abbreviated_address,
    CONCAT(SUBSTRING(s.s_comment, 1, 20), '...') AS short_comment,
    COUNT(o.o_orderkey) AS total_orders,
    SUM(l.l_extendedprice) AS total_revenue,
    STRING_AGG(DISTINCT r.r_name ORDER BY r.r_name) AS regions
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    lineitem l ON l.l_partkey = p.p_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
JOIN 
    customer c ON o.o_custkey = c.c_custkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
WHERE 
    p.p_size BETWEEN 10 AND 20
    AND o.o_orderdate >= '1997-01-01'
    AND o.o_orderstatus = 'F'
GROUP BY 
    p.p_name, s.s_name, s.s_address, s.s_comment, p.p_partkey, s.s_suppkey
HAVING 
    COUNT(o.o_orderkey) > 5
ORDER BY 
    total_revenue DESC;
