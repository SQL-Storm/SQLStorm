
WITH SupplierParts AS (
    SELECT 
        s.s_suppkey AS supplier_id,
        s.s_name AS supplier_name,
        p.p_name AS part_name,
        ps.ps_availqty AS available_quantity,
        ps.ps_supplycost AS supply_cost,
        CONCAT('Supplier: ', s.s_name, ' provides part: ', p.p_name, 
               ' with availability of ', ps.ps_availqty, 
               ' at a supply cost of ', CAST(ps.ps_supplycost AS DECIMAL(10, 2))) AS details
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
),
CustomerOrders AS (
    SELECT 
        c.c_custkey AS customer_id,
        c.c_name AS customer_name,
        COUNT(o.o_orderkey) AS order_count,
        SUM(o.o_totalprice) AS total_spent,
        CONCAT('Customer: ', c.c_name, 
               ' has made ', COUNT(o.o_orderkey), 
               ' orders totaling $', CAST(SUM(o.o_totalprice) AS DECIMAL(10, 2))) AS order_details
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
)
SELECT 
    sp.supplier_name,
    sp.part_name,
    co.customer_name,
    sp.available_quantity,
    sp.supply_cost,
    sp.details,
    co.order_count,
    co.total_spent,
    co.order_details
FROM 
    SupplierParts sp
JOIN 
    CustomerOrders co ON sp.available_quantity > 100
WHERE 
    sp.supply_cost < 50
ORDER BY 
    co.total_spent DESC, sp.supplier_name;
