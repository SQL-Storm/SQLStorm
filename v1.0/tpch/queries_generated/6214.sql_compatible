
WITH RankedSuppliers AS (
    SELECT s.s_suppkey, s.s_name, s.s_acctbal, 
           ROW_NUMBER() OVER (PARTITION BY n.n_name ORDER BY s.s_acctbal DESC) AS SupplierRank
    FROM supplier s
    JOIN nation n ON s.s_nationkey = n.n_nationkey
), 
TopNationalSuppliers AS (
    SELECT * 
    FROM RankedSuppliers 
    WHERE SupplierRank <= 3
), 
PartDetails AS (
    SELECT p.p_partkey, p.p_name, p.p_brand, ps.ps_availqty, ps.ps_supplycost, ps.ps_suppkey
    FROM part p
    JOIN partsupp ps ON p.p_partkey = ps.ps_partkey
    WHERE p.p_size IN ('small', 'medium', 'large')
), 
OrderSummary AS (
    SELECT o.o_orderkey, o.o_totalprice, o.o_orderdate, c.c_mktsegment
    FROM orders o
    JOIN customer c ON o.o_custkey = c.c_custkey
    WHERE o.o_orderstatus = 'F' AND o.o_orderdate BETWEEN '1997-01-01' AND '1997-12-31'
)
SELECT n.n_name, 
       COUNT(DISTINCT ts.s_suppkey) AS TotalTopSuppliers, 
       AVG(pd.ps_supplycost) AS AverageSupplyCost, 
       SUM(os.o_totalprice) AS TotalSales
FROM nation n
LEFT JOIN TopNationalSuppliers ts ON n.n_nationkey = ts.n_nationkey
LEFT JOIN PartDetails pd ON ts.s_suppkey = pd.ps_suppkey
LEFT JOIN OrderSummary os ON pd.p_partkey = os.o_orderkey
GROUP BY n.n_name
ORDER BY TotalSales DESC, n.n_name ASC;
