
SELECT 
    CONCAT('Supplier: ', s.s_name, ', from: ', s.s_address, ', Nation: ', n.n_name) AS supplier_info,
    COUNT(DISTINCT ps.ps_partkey) AS num_parts_supplied,
    SUM(ps.ps_availqty) AS total_available_quantity,
    STRING_AGG(DISTINCT p.p_name, ', ' ORDER BY p.p_name) AS part_names,
    SUM(l.l_quantity) AS total_quantity_ordered,
    AVG(o.o_totalprice) AS avg_order_value
FROM 
    supplier s
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
WHERE 
    n.n_regionkey = (SELECT r.r_regionkey FROM region r WHERE r.r_name = 'ASIA')
GROUP BY 
    s.s_name, s.s_address, n.n_name
HAVING 
    total_available_quantity > 100
ORDER BY 
    avg_order_value DESC;
