
WITH RECURSIVE SupplierHierarchy AS (
    SELECT s.s_suppkey, s.s_name, s.s_acctbal, 0 AS level
    FROM supplier s
    WHERE s.s_acctbal > 5000.00
    UNION ALL
    SELECT s.s_suppkey, s.s_name, s.s_acctbal, sh.level + 1
    FROM supplier s
    JOIN SupplierHierarchy sh ON s.s_suppkey = sh.s_suppkey
),
FilteredOrders AS (
    SELECT o.o_orderkey, o.o_custkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE l.l_shipdate >= '1997-01-01' AND l.l_shipdate < '1998-01-01'
    GROUP BY o.o_orderkey, o.o_custkey
),
NationSummary AS (
    SELECT n.n_nationkey, n.n_name,
           COUNT(DISTINCT s.s_suppkey) AS supplier_count,
           SUM(s.s_acctbal) AS total_acctbal
    FROM nation n
    LEFT JOIN supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY n.n_nationkey, n.n_name
)
SELECT p.p_name,
       COUNT(DISTINCT ps.ps_suppkey) AS total_suppliers,
       MAX(ps.ps_availqty) AS max_avail_qty,
       AVG(COALESCE(n.total_acctbal, 0)) AS avg_supplier_acctbal,
       SUM(CASE WHEN o.o_orderstatus = 'O' THEN fo.total_sales ELSE 0 END) AS total_open_sales
FROM part p
JOIN partsupp ps ON p.p_partkey = ps.ps_partkey
LEFT JOIN SupplierHierarchy sh ON ps.ps_suppkey = sh.s_suppkey
LEFT JOIN FilteredOrders fo ON fo.o_custkey IN (SELECT c.c_custkey FROM customer c WHERE c.c_nationkey = sh.level)
LEFT JOIN NationSummary n ON n.n_nationkey = (SELECT s.s_nationkey FROM supplier s WHERE s.s_suppkey = sh.s_suppkey LIMIT 1)
GROUP BY p.p_name
HAVING AVG(ps.ps_availqty) > 10
ORDER BY total_suppliers DESC, p.p_name ASC
LIMIT 10;
