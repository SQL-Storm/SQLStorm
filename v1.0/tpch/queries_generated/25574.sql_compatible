
SELECT 
    s.s_name AS supplier_name,
    COUNT(DISTINCT ps.ps_partkey) AS total_parts_supplied,
    SUM(ps.ps_availqty) AS total_available_quantity,
    SUM(ps.ps_supplycost) AS total_supply_cost,
    SUBSTRING_INDEX(GROUP_CONCAT(DISTINCT CONCAT(p.p_name, '(', p.p_mfgr, ')') ORDER BY p.p_name SEPARATOR ', '), ',', 10) AS top_supplied_parts,
    r.r_name AS supplier_region
FROM 
    supplier s
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
WHERE 
    s.s_acctbal > (SELECT AVG(s_acctbal) FROM supplier)
GROUP BY 
    s.s_suppkey, s.s_name, r.r_name
HAVING 
    COUNT(DISTINCT ps.ps_partkey) > 5
ORDER BY 
    total_available_quantity DESC, supplier_name ASC;
