
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_nationkey,
        s.s_acctbal,
        RANK() OVER (PARTITION BY n.n_name ORDER BY s.s_acctbal DESC) AS rank_acctbal
    FROM 
        supplier s
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
),
FilteredSuppliers AS (
    SELECT 
        rs.s_suppkey,
        rs.s_name,
        rs.s_acctbal,
        n.n_name,
        r.r_name
    FROM 
        RankedSuppliers rs
    JOIN 
        nation n ON rs.s_nationkey = n.n_nationkey
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
    WHERE 
        rs.rank_acctbal <= 3
)
SELECT 
    ps.ps_partkey,
    p.p_name,
    COUNT(DISTINCT fs.s_suppkey) AS num_suppliers,
    AVG(fs.s_acctbal) AS avg_acctbal,
    SUM(CASE WHEN l.l_returnflag = 'R' THEN l.l_quantity ELSE 0 END) AS total_returned_quantity,
    STRING_AGG(DISTINCT CONCAT(fs.s_name, ' (', fs.r_name, ')') ORDER BY fs.s_name) AS supplier_details
FROM 
    partsupp ps
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    FilteredSuppliers fs ON ps.ps_suppkey = fs.s_suppkey
LEFT JOIN 
    lineitem l ON l.l_partkey = ps.ps_partkey
GROUP BY 
    ps.ps_partkey, p.p_name
ORDER BY 
    num_suppliers DESC, avg_acctbal DESC;
