
SELECT 
    p.p_name, 
    CONCAT('Supplier: ', s.s_name, ' - Price: ', FORMAT(ps.ps_supplycost, 2), ' - Quantity Available: ', ps.ps_availqty) AS supplier_info,
    COUNT(DISTINCT o.o_orderkey) AS total_orders,
    SUM(l.l_extendedprice * (1 - l.l_discount)) AS revenue,
    AVG(CASE WHEN l.l_shipdate > l.l_receiptdate THEN DATEDIFF(l.l_shipdate, l.l_receiptdate) ELSE NULL END) AS avg_delay_days,
    STRING_AGG(DISTINCT SUBSTRING_INDEX(s.s_comment, ' ', 3), ', ') AS short_supplier_comments
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
WHERE 
    p.p_retailprice > 100.00 
GROUP BY 
    p.p_name, s.s_name, ps.ps_supplycost, ps.ps_availqty
HAVING 
    COUNT(DISTINCT o.o_orderkey) > 10
ORDER BY 
    revenue DESC;
