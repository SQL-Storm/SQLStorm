
WITH RECURSIVE OrderHierarchy AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        o.o_totalprice,
        1 AS level
    FROM 
        orders o
    WHERE 
        o.o_orderdate >= DATE '1997-01-01' 
    UNION ALL
    SELECT 
        o.o_orderkey,
        oh.o_orderdate,
        oh.o_totalprice,
        oh.level + 1
    FROM 
        orders o
    JOIN 
        OrderHierarchy oh ON o.o_orderkey = oh.o_orderkey
    WHERE 
        oh.level < 5 
),
SupplierDetails AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_value
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name
),
LineItemSummaries AS (
    SELECT 
        l.l_orderkey,
        COUNT(*) AS line_item_count,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM 
        lineitem l
    WHERE 
        l.l_shipdate >= DATE '1998-10-01' - INTERVAL '30 days' 
    GROUP BY 
        l.l_orderkey
),
CustomerPurchases AS (
    SELECT 
        c.c_custkey,
        COUNT(DISTINCT o.o_orderkey) AS order_count,
        AVG(o.o_totalprice) AS average_order_value
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        c.c_acctbal IS NOT NULL
    GROUP BY 
        c.c_custkey
)
SELECT 
    n.n_name,
    SUM(COALESCE(ls.total_revenue, 0)) AS total_revenue,
    COUNT(DISTINCT oh.o_orderkey) AS total_orders,
    AVG(c.order_count) AS avg_orders_per_customer,
    COUNT(DISTINCT s.s_suppkey) AS unique_suppliers,
    ROW_NUMBER() OVER (PARTITION BY n.n_nationkey ORDER BY SUM(COALESCE(ls.total_revenue, 0)) DESC) AS revenue_rank
FROM 
    nation n
LEFT JOIN 
    LineItemSummaries ls ON ls.l_orderkey IN (SELECT o.o_orderkey FROM orders o WHERE o.o_orderstatus = 'O') 
INNER JOIN 
    CustomerPurchases c ON c.c_custkey IN (SELECT DISTINCT o.o_custkey FROM orders o WHERE o.o_orderdate >= DATE '1997-01-01')
LEFT JOIN 
    SupplierDetails s ON s.s_suppkey IN (SELECT DISTINCT ps.ps_suppkey FROM partsupp ps JOIN part p ON ps.ps_partkey = p.p_partkey WHERE p.p_retailprice > 50)
GROUP BY 
    n.n_nationkey, n.n_name
ORDER BY 
    total_revenue DESC, avg_orders_per_customer DESC
FETCH FIRST 10 ROWS ONLY;
