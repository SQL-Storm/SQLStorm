WITH PartDetails AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        CONCAT(p.p_brand, ' - ', p.p_type) AS full_description,
        SUBSTRING(p.p_comment, 1, 15) AS short_comment
    FROM 
        part p
    WHERE 
        p.p_size >= 10
),
SupplierDetails AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        r.r_name AS region_name,
        s.s_acctbal
    FROM 
        supplier s
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
    WHERE 
        s.s_acctbal > 5000
),
CustomerDetails AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        c.c_mktsegment,
        CONCAT(c.c_name, ' - ', c.c_address) AS cust_info
    FROM 
        customer c
    WHERE 
        c.c_acctbal < 1000
),
OrderInfo AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        o.o_totalprice,
        c.c_name
    FROM 
        orders o
    JOIN 
        customer c ON o.o_custkey = c.c_custkey
    WHERE 
        o.o_orderdate BETWEEN '1996-01-01' AND '1996-12-31'
)
SELECT 
    pd.full_description,
    sd.region_name,
    cd.cust_info,
    oi.o_orderkey,
    oi.o_totalprice,
    LENGTH(pd.short_comment) AS comment_length
FROM 
    PartDetails pd
JOIN 
    SupplierDetails sd ON pd.p_partkey IN (SELECT ps.ps_partkey FROM partsupp ps WHERE ps.ps_availqty > 5)
JOIN 
    CustomerDetails cd ON cd.c_mktsegment = 'BUILDING'
JOIN 
    OrderInfo oi ON oi.o_orderkey IN (SELECT l.l_orderkey FROM lineitem l WHERE l.l_quantity > 10)
ORDER BY 
    oi.o_totalprice DESC, comment_length ASC;