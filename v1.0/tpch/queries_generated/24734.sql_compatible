
WITH RankedOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        o.o_totalprice,
        o.custkey,
        RANK() OVER (PARTITION BY o.o_orderstatus ORDER BY o.o_totalprice DESC) AS order_rank
    FROM 
        orders o
    WHERE 
        o.o_orderstatus IN ('O', 'F')
),
QualifiedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name
    HAVING 
        SUM(ps.ps_availqty) >= 100
),
LargeLineItems AS (
    SELECT 
        l.l_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS net_revenue,
        COUNT(*) AS line_count
    FROM 
        lineitem l
    GROUP BY 
        l.l_orderkey
    HAVING 
        COUNT(*) > 10
    AND SUM(l.l_extendedprice * (1 - l.l_discount)) > 1000
),
SupplierOrderStats AS (
    SELECT 
        so.s_suppkey,
        so.s_name,
        COUNT(o.o_orderkey) AS total_orders,
        AVG(oi.o_totalprice) AS avg_order_value
    FROM 
        QualifiedSuppliers so
    LEFT JOIN 
        lineitem l ON so.s_suppkey = l.l_suppkey
    LEFT JOIN 
        RankedOrders oi ON l.l_orderkey = oi.o_orderkey
    GROUP BY 
        so.s_suppkey, so.s_name
)
SELECT 
    r.n_name AS nation_name,
    COUNT(DISTINCT s.s_suppkey) AS supplier_count,
    AVG(ss.avg_order_value) AS average_supplier_order_value,
    MAX(l.net_revenue) AS highest_lineitem_revenue,
    COALESCE(SUM(CASE WHEN l.line_count >= 10 THEN l.net_revenue END), 0) AS total_large_lineitem_revenue
FROM 
    nation r
JOIN 
    supplier s ON r.n_nationkey = s.s_nationkey
LEFT JOIN 
    SupplierOrderStats ss ON s.s_suppkey = ss.s_suppkey
LEFT JOIN 
    LargeLineItems l ON l.l_orderkey IN (SELECT DISTINCT o.o_orderkey FROM orders o WHERE o.o_custkey = s.s_suppkey)
WHERE 
    r.n_name IS NOT NULL
GROUP BY 
    r.n_name
HAVING 
    COUNT(DISTINCT s.s_suppkey) > 5 
    OR MAX(ss.avg_order_value) IS NULL
ORDER BY 
    nation_name DESC;
