WITH RECURSIVE SupplierHierarchy AS (
    SELECT s_suppkey, s_name, s_nationkey, s_acctbal, 1 AS level
    FROM supplier
    WHERE s_acctbal IS NOT NULL
    UNION ALL
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, s.s_acctbal, sh.level + 1
    FROM supplier s
    JOIN SupplierHierarchy sh ON s.s_nationkey = sh.s_nationkey
    WHERE sh.level < 5
),
PartPriceStats AS (
    SELECT p.p_partkey, p.p_name, AVG(ps.ps_supplycost) AS avg_supply_cost
    FROM part p
    JOIN partsupp ps ON p.p_partkey = ps.ps_partkey
    GROUP BY p.p_partkey, p.p_name
),
OrdersSummary AS (
    SELECT o.o_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE l.l_shipdate >= '1997-01-01' AND l.l_shipdate <= '1997-12-31'
    GROUP BY o.o_orderkey
),
NationRegion AS (
    SELECT n.n_name, r.r_name, COUNT(DISTINCT s.s_suppkey) AS supplier_count
    FROM nation n
    JOIN region r ON n.n_regionkey = r.r_regionkey
    LEFT JOIN supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY n.n_name, r.r_name
)

SELECT 
    p.p_name, 
    ps.avg_supply_cost, 
    os.total_revenue,
    nr.n_name,
    nr.r_name,
    sh.level AS supplier_level
FROM PartPriceStats ps
JOIN OrdersSummary os ON ps.p_partkey = os.o_orderkey
JOIN NationRegion nr ON nr.supplier_count > 0
JOIN SupplierHierarchy sh ON nr.n_name = (SELECT n.n_name FROM nation n WHERE n.n_nationkey = sh.s_nationkey)
WHERE ps.avg_supply_cost IS NOT NULL
AND os.total_revenue > 10000
ORDER BY ps.avg_supply_cost DESC, os.total_revenue DESC;