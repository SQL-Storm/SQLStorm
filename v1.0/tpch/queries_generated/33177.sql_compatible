
WITH RECURSIVE supplier_hierarchy AS (
    SELECT s.s_supplycost, s.s_suppkey, 
           COALESCE(ps.ps_availqty, 0) AS available_quantity, 
           ROW_NUMBER() OVER (PARTITION BY s.s_suppkey ORDER BY s.s_supplycost DESC) AS rn
    FROM supplier s
    LEFT JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
), total_orders AS (
    SELECT o.o_custkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_spent
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE l.l_shipdate >= '1997-01-01' 
    GROUP BY o.o_custkey
), nation_region AS (
    SELECT n.n_nationkey, r.r_regionkey, AVG(c.c_acctbal) AS avg_account_balance
    FROM nation n
    JOIN region r ON n.n_regionkey = r.r_regionkey
    JOIN customer c ON n.n_nationkey = c.c_nationkey
    GROUP BY n.n_nationkey, r.r_regionkey
)
SELECT n.n_name, r.r_name, 
       COALESCE(total.total_spent, 0) AS total_spent, 
       SUM(sup.available_quantity) AS total_available_quantity, 
       COUNT(DISTINCT sup.s_suppkey) AS unique_suppliers
FROM nation n
JOIN region r ON n.n_regionkey = r.r_regionkey
LEFT JOIN total_orders total ON total.o_custkey = n.n_nationkey
LEFT JOIN supplier_hierarchy sup ON n.n_nationkey = sup.s_suppkey
GROUP BY n.n_name, r.r_name
HAVING COUNT(DISTINCT total.o_custkey) > 0 
ORDER BY total_available_quantity DESC, total_spent DESC;
