WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        RANK() OVER (PARTITION BY ps.ps_partkey ORDER BY s.s_acctbal DESC) AS supplier_rank
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    WHERE 
        s.s_acctbal IS NOT NULL
),
CustomerOrders AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COUNT(o.o_orderkey) AS total_orders,
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
),
PartSales AS (
    SELECT 
        p.p_partkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales,
        AVG(l.l_discount) AS avg_discount
    FROM 
        part p
    JOIN 
        lineitem l ON p.p_partkey = l.l_partkey
    WHERE 
        l.l_shipdate > '1997-01-01' 
    GROUP BY 
        p.p_partkey
),
NationRank AS (
    SELECT 
        n.n_nationkey,
        COUNT(DISTINCT s.s_suppkey) AS supplier_count,
        SUM(s.s_acctbal) AS total_acctbal
    FROM 
        nation n
    LEFT JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY 
        n.n_nationkey
)
SELECT 
    p.p_name,
    ps.ps_partkey,
    SUM(ps.ps_availqty) AS total_available,
    COALESCE(MAX(rs.supplier_rank), 0) AS max_supplier_rank,
    c.c_name,
    COALESCE(c.total_orders, 0) AS customer_order_count,
    COALESCE(c.total_spent, 0) AS customer_total_spent,
    n.n_nationkey,
    n.supplier_count,
    n.total_acctbal,
    CASE 
        WHEN AVG(ps.ps_supplycost) IS NULL THEN 'No Cost'
        ELSE CAST(AVG(ps.ps_supplycost) AS VARCHAR)
    END AS avg_supply_cost 
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
LEFT JOIN 
    RankedSuppliers rs ON ps.ps_partkey = rs.s_suppkey
LEFT JOIN 
    CustomerOrders c ON p.p_partkey = ANY(SELECT l.l_partkey FROM lineitem l WHERE l.l_orderkey IN 
        (SELECT o.o_orderkey FROM orders o WHERE o.o_custkey = c.c_custkey))
LEFT JOIN 
    NationRank n ON p.p_partkey = ANY(SELECT ps.ps_partkey FROM partsupp ps WHERE ps.ps_suppkey = n.n_nationkey)
GROUP BY 
    p.p_name, ps.ps_partkey, c.c_name, n.n_nationkey
HAVING 
    SUM(ps.ps_availqty) > 10 OR COUNT(DISTINCT rs.s_suppkey) = 0
ORDER BY 
    total_available DESC, customer_total_spent DESC;