
WITH SupplierInfo AS (
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY s.s_suppkey, s.s_name, s.s_nationkey
),
CustomerOrders AS (
    SELECT c.c_custkey, c.c_name, o.o_orderkey, o.o_orderdate, o.o_totalprice
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    WHERE o.o_orderstatus = 'O'
),
LineItemStats AS (
    SELECT l.l_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS net_revenue, 
           ROW_NUMBER() OVER (PARTITION BY l.l_orderkey ORDER BY l.l_extendedprice DESC) AS ranking
    FROM lineitem l
    GROUP BY l.l_orderkey
)
SELECT 
    r.r_name,
    n.n_name,
    s.s_name,
    s.total_supply_cost,
    SUM(COALESCE(li.net_revenue, 0)) AS total_net_revenue,
    COUNT(DISTINCT co.o_orderkey) AS total_orders
FROM region r
LEFT JOIN nation n ON n.n_regionkey = r.r_regionkey
LEFT JOIN SupplierInfo s ON s.s_nationkey = n.n_nationkey
LEFT JOIN LineItemStats li ON li.l_orderkey IN (SELECT co.o_orderkey FROM CustomerOrders co WHERE co.o_orderdate >= '1997-01-01')
LEFT JOIN CustomerOrders co ON co.o_orderkey = li.l_orderkey
WHERE s.total_supply_cost > (SELECT AVG(total_supply_cost) FROM SupplierInfo)
GROUP BY r.r_name, n.n_name, s.s_name, s.total_supply_cost
ORDER BY total_net_revenue DESC
LIMIT 10;
