
WITH RECURSIVE Supplier_CTE AS (
    SELECT s_suppkey, s_name, s_acctbal,
           ROW_NUMBER() OVER (PARTITION BY s_nationkey ORDER BY s_acctbal DESC) AS rank
    FROM supplier
    WHERE s_acctbal IS NOT NULL
), 
Order_Summary AS (
    SELECT o.o_orderkey, 
           SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
           AVG(l.l_tax) AS avg_tax,
           COUNT(DISTINCT l.l_suppkey) AS unique_suppliers
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE o.o_orderdate BETWEEN '1996-01-01' AND '1996-12-31'
    GROUP BY o.o_orderkey
), 
Customer_Stats AS (
    SELECT c.c_custkey, 
           SUM(o.o_totalprice) AS total_spent,
           COUNT(o.o_orderkey) AS order_count,
           MAX(o.o_orderdate) AS last_order_date
    FROM customer c
    LEFT JOIN orders o ON c.c_custkey = o.o_custkey
    GROUP BY c.c_custkey
)
SELECT r.r_name, 
       COALESCE(SUM(CASE WHEN cs.total_spent IS NOT NULL THEN cs.total_spent ELSE 0 END), 0) AS total_spending,
       COALESCE(SUM(CASE WHEN ss.rank IS NOT NULL THEN ss.s_acctbal ELSE 0 END), 0) AS total_supplier_balance,
       PERCENTILE_CONT(0.5) WITHIN GROUP (ORDER BY os.total_revenue) AS median_revenue,
       COUNT(DISTINCT cs.c_custkey) AS customer_count
FROM region r
LEFT JOIN nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN supplier s ON n.n_nationkey = s.s_nationkey
LEFT JOIN Supplier_CTE ss ON s.s_suppkey = ss.s_suppkey
LEFT JOIN Customer_Stats cs ON s.s_nationkey = cs.c_custkey
LEFT JOIN Order_Summary os ON cs.order_count > 5 AND os.total_revenue > 1000
WHERE r.r_name NOT LIKE '%out%'
GROUP BY r.r_name
ORDER BY total_spending DESC, total_supplier_balance DESC
LIMIT 10
UNION ALL
SELECT r.r_name,
       SUM(ss.s_acctbal) AS total_spending,
       NULL AS total_supplier_balance,
       NULL AS median_revenue,
       NULL AS customer_count
FROM region r
LEFT JOIN supplier s ON s.s_nationkey IN (SELECT n.n_nationkey FROM nation n WHERE n.n_name LIKE 'Z%')
WHERE r.r_regionkey NOT IN (SELECT r_regionkey FROM region WHERE r_name IS NULL)
GROUP BY r.r_name
HAVING COUNT(DISTINCT s.s_suppkey) > 1
ORDER BY 1;
