
WITH supplier_avg_cost AS (
    SELECT 
        ps.s_suppkey,
        AVG(ps.ps_supplycost) AS avg_supply_cost
    FROM 
        partsupp ps
    JOIN 
        supplier s ON ps.ps_suppkey = s.s_suppkey
    GROUP BY 
        ps.s_suppkey
),
customer_order_count AS (
    SELECT 
        c.c_custkey,
        COUNT(o.o_orderkey) AS order_count
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey
),
nation_summary AS (
    SELECT 
        n.n_nationkey,
        n.n_name,
        SUM(c.c_acctbal) AS total_acctbal,
        AVG(c.c_acctbal) AS avg_acctbal,
        COUNT(DISTINCT s.s_suppkey) AS total_suppliers,
        COUNT(DISTINCT o.o_orderkey) AS total_orders
    FROM 
        nation n
    JOIN 
        customer c ON n.n_nationkey = c.c_nationkey
    JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        n.n_nationkey, n.n_name
)
SELECT 
    n.n_name,
    n.total_acctbal,
    n.avg_acctbal,
    n.total_suppliers,
    n.total_orders,
    s.avg_supply_cost
FROM 
    nation_summary n
LEFT JOIN 
    supplier_avg_cost s ON n.total_suppliers > 0
ORDER BY 
    n.total_acctbal DESC, n.n_name ASC;
