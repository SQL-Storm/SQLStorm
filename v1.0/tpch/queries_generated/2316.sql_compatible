
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        RANK() OVER (PARTITION BY ns.n_name ORDER BY s.s_acctbal DESC) AS rank
    FROM 
        supplier s
    JOIN 
        nation ns ON s.s_nationkey = ns.n_nationkey
), 
TotalLineItems AS (
    SELECT 
        l.l_partkey,
        SUM(l.l_quantity) AS total_quantity,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM 
        lineitem l
    GROUP BY 
        l.l_partkey
), 
FilteredParts AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        p.p_brand,
        p.p_retailprice,
        tp.total_quantity,
        tp.total_revenue,
        RANK() OVER (ORDER BY tp.total_revenue DESC) AS revenue_rank
    FROM 
        part p
    JOIN 
        TotalLineItems tp ON p.p_partkey = tp.l_partkey
    WHERE 
        p.p_retailprice > (SELECT AVG(p2.p_retailprice) FROM part p2) 
        AND EXISTS (SELECT 1 FROM partsupp ps WHERE ps.ps_partkey = p.p_partkey AND ps.ps_availqty > 0)
)

SELECT 
    r.r_name AS region,
    SUM(tp.total_revenue) AS total_region_revenue,
    COUNT(DISTINCT ps.ps_suppkey) AS supplier_count,
    ARRAY_AGG(DISTINCT s.s_name) AS top_suppliers
FROM 
    FilteredParts fs
LEFT JOIN 
    partsupp ps ON fs.p_partkey = ps.ps_partkey
LEFT JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
WHERE 
    fs.revenue_rank <= 10
    AND (s.s_acctbal IS NOT NULL OR s.s_comment NOT LIKE '%bad%')
GROUP BY 
    r.r_name
ORDER BY 
    total_region_revenue DESC;
