
WITH SupplierSales AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        lineitem l ON ps.ps_partkey = l.l_partkey
    WHERE 
        l.l_shipdate >= DATE '1996-01-01' AND l.l_shipdate < DATE '1997-01-01'
    GROUP BY 
        s.s_suppkey, s.s_name
),
CustomerPurchases AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COALESCE(SUM(l.l_extendedprice * (1 - l.l_discount)), 0) AS total_purchase
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    LEFT JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        c.c_acctbal > 0
    GROUP BY 
        c.c_custkey, c.c_name
),
RankedSuppliers AS (
    SELECT 
        ss.s_suppkey,
        ss.s_name,
        RANK() OVER (ORDER BY ss.total_sales DESC) AS rnk
    FROM 
        SupplierSales ss
)
SELECT 
    cs.c_name,
    cs.total_purchase,
    rs.s_name AS top_supplier,
    rs.rnk
FROM 
    CustomerPurchases cs
LEFT JOIN 
    RankedSuppliers rs ON cs.total_purchase > 50000
WHERE 
    cs.total_purchase IS NOT NULL
    OR 
    rs.rnk IS NULL
ORDER BY 
    cs.total_purchase DESC
LIMIT 10
UNION ALL
SELECT 
    'Total Sales', 
    SUM(total_purchase), 
    NULL,
    NULL
FROM 
    CustomerPurchases;
