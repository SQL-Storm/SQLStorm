
SELECT 
    LOWER(SUBSTRING(p.p_name, 1, 10)) AS short_name,
    COUNT(DISTINCT s.s_nationkey) AS supplier_count,
    STRING_AGG(DISTINCT s.s_name, ', ') AS supplier_names,
    AVG(ps.ps_supplycost) AS avg_supply_cost,
    (SELECT COUNT(DISTINCT c.c_custkey) 
     FROM customer c 
     WHERE c.c_comment LIKE '%' || LOWER(p.p_comment) || '%') AS related_customer_count
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
WHERE 
    p.p_size IN (SELECT DISTINCT p_size FROM part WHERE p_type LIKE 'Extra%')
GROUP BY 
    LOWER(SUBSTRING(p.p_name, 1, 10)),
    COUNT(DISTINCT s.s_nationkey),
    STRING_AGG(DISTINCT s.s_name, ', '),
    AVG(ps.ps_supplycost) 
HAVING 
    AVG(ps.ps_supplycost) > (SELECT AVG(ps_supplycost) FROM partsupp ps)
ORDER BY 
    supplier_count DESC;
