WITH ranked_orders AS (
    SELECT 
        o.o_orderkey, 
        o.o_orderdate, 
        o.o_totalprice, 
        c.c_name, 
        n.n_name AS nation_name, 
        ROW_NUMBER() OVER (PARTITION BY n.n_name ORDER BY o.o_totalprice DESC) AS order_rank
    FROM 
        orders o
    JOIN 
        customer c ON o.o_custkey = c.c_custkey
    JOIN 
        nation n ON c.c_nationkey = n.n_nationkey
    WHERE 
        o.o_orderdate >= DATE '1997-01-01' AND o.o_orderdate < DATE '1998-01-01'
),
top_orders AS (
    SELECT 
        ro.o_orderkey, 
        ro.o_orderdate, 
        ro.o_totalprice, 
        ro.c_name, 
        ro.nation_name
    FROM 
        ranked_orders ro
    WHERE 
        ro.order_rank <= 5
),
order_details AS (
    SELECT 
        lo.l_orderkey, 
        lo.l_partkey, 
        lo.l_quantity, 
        lo.l_extendedprice, 
        p.p_name, 
        p.p_brand, 
        p.p_category,
        lo.l_discount,
        lo.l_tax,
        lo.l_shipdate
    FROM 
        lineitem lo
    JOIN 
        top_orders to ON lo.l_orderkey = to.o_orderkey
    JOIN 
        partsupp ps ON lo.l_partkey = ps.ps_partkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
)
SELECT 
    td.o_orderkey, 
    td.o_orderdate, 
    td.c_name, 
    td.nation_name, 
    SUM(td.l_extendedprice * (1 - td.l_discount)) AS total_revenue,
    COUNT(td.l_partkey) AS items_ordered
FROM 
    order_details td
GROUP BY 
    td.o_orderkey, 
    td.o_orderdate, 
    td.c_name, 
    td.nation_name
ORDER BY 
    total_revenue DESC
LIMIT 10;