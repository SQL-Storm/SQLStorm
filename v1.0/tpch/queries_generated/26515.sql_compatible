
SELECT 
    s.s_name AS supplier_name,
    p.p_name AS part_name,
    CONCAT('Supplier: ', s.s_name, ' supplies ', p.p_name, ' in ', p.p_container, ' containers at $', FORMAT(ps.ps_supplycost, 2)) AS supply_info,
    COUNT(DISTINCT c.c_custkey) AS unique_customers,
    SUM(l.l_quantity) AS total_quantity_sold,
    STRING_AGG(DISTINCT CONCAT(n.n_name, '(', r.r_name, ')'), ', ') AS nations_served
FROM 
    supplier s
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    lineitem l ON l.l_partkey = p.p_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
JOIN 
    customer c ON o.o_custkey = c.c_custkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
WHERE 
    s.s_comment LIKE '%best%'
GROUP BY 
    s.s_name, p.p_name, p.p_container, ps.ps_supplycost
ORDER BY 
    total_quantity_sold DESC, supplier_name ASC
LIMIT 10;
