
SELECT 
    p.p_name,
    COUNT(DISTINCT ps.s_suppkey) AS supplier_count,
    SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
    AVG(DATEDIFF(o.o_orderdate, l.l_shipdate)) AS avg_shipping_days,
    CONCAT('Part: ', p.p_name, ', Revenue: $', FORMAT(SUM(l.l_extendedprice * (1 - l.l_discount)), 2), 
           ', Suppliers: ', COUNT(DISTINCT ps.s_suppkey)) AS report
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    lineitem l ON ps.ps_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
WHERE 
    p.p_container LIKE 'SM%' 
    AND o.o_orderstatus = 'O'
GROUP BY 
    p.p_name, 
    total_revenue
ORDER BY 
    total_revenue DESC
LIMIT 10;
