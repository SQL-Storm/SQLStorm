
WITH RankedOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        o.o_totalprice,
        c.c_name,
        c.c_acctbal,
        ROW_NUMBER() OVER (PARTITION BY c.c_nationkey ORDER BY o.o_totalprice DESC) AS order_rank
    FROM 
        orders o
    JOIN 
        customer c ON o.o_custkey = c.c_custkey
    WHERE 
        o.o_orderdate >= '1997-01-01' AND o.o_orderdate < '1997-12-31'
),
TopOrders AS (
    SELECT 
        r.r_name AS region_name,
        n.n_name AS nation_name,
        ro.o_orderkey,
        ro.o_orderdate,
        ro.o_totalprice,
        ro.c_name,
        ro.c_acctbal
    FROM 
        RankedOrders ro
    JOIN 
        customer c ON ro.c_name = c.c_name
    JOIN 
        nation n ON c.c_nationkey = n.n_nationkey
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
    WHERE 
        ro.order_rank <= 5
)
SELECT 
    to.region_name,
    to.nation_name,
    COUNT(*) AS order_count,
    AVG(to.o_totalprice) AS avg_order_value,
    SUM(to.c_acctbal) AS total_acct_balance
FROM 
    TopOrders to
GROUP BY 
    to.region_name, to.nation_name
ORDER BY 
    order_count DESC, avg_order_value DESC;
