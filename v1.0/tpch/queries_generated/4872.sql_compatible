
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        s.s_acctbal, 
        ROW_NUMBER() OVER (PARTITION BY p.p_partkey ORDER BY s.s_acctbal DESC) AS rn
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
    WHERE 
        s.s_acctbal IS NOT NULL
), OrderSummary AS (
    SELECT 
        o.o_orderkey, 
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM 
        orders o
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderstatus = 'O'
        AND l.l_returnflag = 'N'
    GROUP BY 
        o.o_orderkey
), SupplierPerformance AS (
    SELECT 
        r.r_name AS region_name, 
        SUM(o.total_revenue) AS region_revenue,
        COUNT(DISTINCT s.s_suppkey) AS supplier_count
    FROM 
        RankedSuppliers s
    LEFT JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
    LEFT JOIN 
        region r ON n.n_regionkey = r.r_regionkey
    LEFT JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    LEFT JOIN 
        OrderSummary o ON ps.ps_partkey IN (SELECT p.p_partkey FROM part p WHERE p.p_brand = 'Brand#45')
    GROUP BY 
        r.r_name
)
SELECT 
    sp.region_name, 
    sp.region_revenue, 
    sp.supplier_count,
    COALESCE(sp.region_revenue / NULLIF(sp.supplier_count, 0), 0) AS avg_revenue_per_supplier
FROM 
    SupplierPerformance sp
ORDER BY 
    sp.region_revenue DESC
FETCH FIRST 10 ROWS ONLY;
