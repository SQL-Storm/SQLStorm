
SELECT 
    CONCAT(SUBSTRING_INDEX(p.p_name, ' ', 1), ' ', SUBSTRING_INDEX(p.p_name, ' ', -1)) AS short_name,
    COUNT(DISTINCT s.s_suppkey) AS supplier_count,
    ROUND(AVG(ps.ps_supplycost), 2) AS avg_supply_cost,
    LEFT(n.n_name, 3) AS nation_prefix,
    LENGTH(ps.ps_comment) AS comment_length,
    REPLACE(p.p_comment, 'fragile', 'durable') AS updated_comment
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
WHERE 
    p.p_size BETWEEN 10 AND 50
    AND s.s_acctbal > 1000
GROUP BY 
    short_name, nation_prefix, comment_length, updated_comment
HAVING 
    supplier_count > 2
ORDER BY 
    updated_comment DESC
LIMIT 100;
