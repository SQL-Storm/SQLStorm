
WITH SupplierStats AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        COUNT(DISTINCT ps.ps_partkey) AS total_parts,
        SUM(ps.ps_availqty) AS total_available_qty,
        AVG(ps.ps_supplycost) AS avg_supply_cost
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name
),
CustomerOrders AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        SUM(o.o_totalprice) AS total_spent,
        COUNT(DISTINCT o.o_orderkey) AS order_count
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        o.o_orderstatus = 'O'
    GROUP BY 
        c.c_custkey, c.c_name
),
OrderedParts AS (
    SELECT 
        l.l_partkey,
        SUM(l.l_quantity) AS total_ordered_qty,
        AVG(l.l_extendedprice) AS avg_price_per_unit
    FROM 
        lineitem l
    GROUP BY 
        l.l_partkey
)
SELECT 
    n.n_name AS nation,
    s.s_name AS supplier_name,
    ss.total_parts,
    ss.total_available_qty,
    ss.avg_supply_cost,
    co.total_spent,
    co.order_count,
    op.total_ordered_qty,
    op.avg_price_per_unit
FROM 
    nation n
LEFT JOIN 
    supplier s ON n.n_nationkey = s.s_nationkey
LEFT JOIN 
    SupplierStats ss ON s.s_suppkey = ss.s_suppkey
LEFT JOIN 
    CustomerOrders co ON n.n_nationkey = (SELECT c.c_nationkey FROM customer c WHERE c.c_custkey = co.c_custkey LIMIT 1)
LEFT JOIN 
    OrderedParts op ON op.l_partkey IN (SELECT ps.ps_partkey FROM partsupp ps WHERE ps.ps_suppkey = s.s_suppkey)
WHERE 
    (ss.total_available_qty IS NOT NULL OR co.total_spent IS NOT NULL)
    AND (ss.avg_supply_cost > 50.00 OR op.avg_price_per_unit < 20.00)
ORDER BY 
    n.n_name, s.s_name;
