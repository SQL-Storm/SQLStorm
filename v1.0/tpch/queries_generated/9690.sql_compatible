
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        n.n_name AS nation_name,
        RANK() OVER (PARTITION BY n.n_name ORDER BY s.s_acctbal DESC) AS rank_by_acctbal
    FROM 
        supplier s 
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
),
HighValueParts AS (
    SELECT 
        ps.ps_partkey,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM 
        partsupp ps 
    GROUP BY 
        ps.ps_partkey
    HAVING 
        SUM(ps.ps_supplycost * ps.ps_availqty) > 10000
),
OrderDetails AS (
    SELECT 
        o.o_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
        COUNT(l.l_orderkey) AS line_count
    FROM 
        orders o 
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY 
        o.o_orderkey
)
SELECT 
    p.p_name, 
    p.p_brand, 
    p.p_retailprice,
    r.nation_name,
    rv.s_name AS top_supplier,
    od.total_revenue,
    od.line_count
FROM 
    part p
JOIN 
    HighValueParts hvp ON p.p_partkey = hvp.ps_partkey
JOIN 
    RankedSuppliers rv ON rv.rank_by_acctbal = 1
JOIN 
    OrderDetails od ON od.o_orderkey = (
        SELECT MAX(o.o_orderkey) 
        FROM orders o
        WHERE o.o_custkey IN (
            SELECT c.c_custkey 
            FROM customer c 
            WHERE c.c_nationkey = rv.s_nationkey
        )
    )
JOIN 
    nation n ON rv.nation_name = n.n_name
WHERE 
    p.p_size > 10
ORDER BY 
    od.total_revenue DESC;
