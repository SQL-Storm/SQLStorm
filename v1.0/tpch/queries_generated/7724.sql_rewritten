WITH RankedParts AS (
    SELECT 
        p.p_partkey, 
        p.p_name, 
        p.p_brand, 
        p.p_retailprice, 
        COUNT(DISTINCT ps.ps_suppkey) AS supplier_count,
        ROW_NUMBER() OVER (PARTITION BY p.p_brand ORDER BY COUNT(DISTINCT ps.ps_suppkey) DESC) AS rank
    FROM 
        part p
    JOIN 
        partsupp ps ON p.p_partkey = ps.ps_partkey
    GROUP BY 
        p.p_partkey, p.p_name, p.p_brand, p.p_retailprice
), 
HighValueCustomers AS (
    SELECT 
        c.c_custkey, 
        c.c_name, 
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        o.o_orderstatus = 'O' AND o.o_orderdate >= DATE '1997-01-01'
    GROUP BY 
        c.c_custkey, c.c_name
    HAVING 
        total_spent > 5000
)
SELECT 
    r.r_name, 
    COUNT(DISTINCT nc.n_nationkey) AS nation_count,
    SUM(lp.l_extendedprice * (1 - lp.l_discount)) AS total_sales,
    AVG(high_c.total_spent) AS avg_customer_spending
FROM 
    region r
JOIN 
    nation nc ON r.r_regionkey = nc.n_regionkey
JOIN 
    supplier s ON nc.n_nationkey = s.s_nationkey
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    lineitem lp ON ps.ps_partkey = lp.l_partkey
JOIN 
    HighValueCustomers high_c ON lp.l_orderkey IN (SELECT o.o_orderkey 
                                                     FROM orders o 
                                                     WHERE o.o_custkey = high_c.c_custkey)
WHERE 
    lp.l_shipdate >= DATE '1997-01-01'
GROUP BY 
    r.r_name
ORDER BY 
    total_sales DESC;