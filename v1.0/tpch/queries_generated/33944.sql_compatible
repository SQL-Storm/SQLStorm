
WITH RECURSIVE nation_hierarchy AS (
    SELECT n_nationkey, n_name, n_regionkey, 1 AS level
    FROM nation
    WHERE n_regionkey = 1
    UNION ALL
    SELECT n.n_nationkey, n.n_name, n.n_regionkey, nh.level + 1
    FROM nation n
    JOIN nation_hierarchy nh ON n.n_regionkey = nh.n_nationkey
), 
supplier_totals AS (
    SELECT s.s_suppkey, SUM(ps.ps_supplycost * ps.ps_availqty) AS total_cost
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY s.s_suppkey
), 
order_summary AS (
    SELECT o.o_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE o.o_orderdate >= DATE '1996-01-01'
    GROUP BY o.o_orderkey
)
SELECT 
    r.r_name AS region_name,
    n.n_name AS nation_name,
    s.s_name AS supplier_name,
    COALESCE(st.total_cost, 0) AS supplier_total_cost,
    COALESCE(os.total_revenue, 0) AS order_total_revenue,
    (COALESCE(os.total_revenue, 0) - COALESCE(st.total_cost, 0)) AS profit,
    ROW_NUMBER() OVER (PARTITION BY r.r_name ORDER BY profit DESC) AS profit_rank
FROM region r
LEFT JOIN nation n ON n.n_regionkey = r.r_regionkey
LEFT JOIN supplier s ON s.s_nationkey = n.n_nationkey
LEFT JOIN supplier_totals st ON s.s_suppkey = st.s_suppkey
LEFT JOIN order_summary os ON os.o_orderkey = (
    SELECT o.o_orderkey 
    FROM orders o 
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey 
    WHERE l.l_suppkey = s.s_suppkey 
    ORDER BY o.o_orderdate DESC 
    LIMIT 1
)
WHERE r.r_name LIKE 'A%'
GROUP BY r.r_name, n.n_name, s.s_name, st.total_cost, os.total_revenue
ORDER BY profit DESC
LIMIT 10;
