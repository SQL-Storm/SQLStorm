
WITH supplier_stats AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_availqty) AS total_available,
        AVG(ps.ps_supplycost) AS avg_supply_cost,
        COUNT(DISTINCT pa.p_partkey) AS part_count
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN part pa ON ps.ps_partkey = pa.p_partkey
    GROUP BY s.s_suppkey, s.s_name
),
customer_order_summary AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COUNT(DISTINCT o.o_orderkey) AS total_orders,
        SUM(o.o_totalprice) AS total_spent
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    GROUP BY c.c_custkey, c.c_name
),
detailed_order_info AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS order_total,
        SUM(l.l_quantity) AS total_quantity
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY o.o_orderkey, o.o_orderdate
)
SELECT 
    rn.r_name AS region_name,
    n.n_name AS nation_name,
    ss.s_name AS supplier_name,
    cs.c_name AS customer_name,
    cos.total_orders,
    cos.total_spent,
    dos.order_total,
    dos.total_quantity,
    ss.total_available,
    ss.avg_supply_cost,
    ss.part_count
FROM region rn
JOIN nation n ON rn.r_regionkey = n.n_regionkey
JOIN supplier_stats ss ON n.n_nationkey = ss.s_suppkey
JOIN customer_order_summary cos ON ss.s_suppkey = cos.c_custkey
JOIN detailed_order_info dos ON cos.total_orders = dos.o_orderkey
WHERE dos.order_total > 1000
ORDER BY rn.r_name, n.n_name, ss.total_available DESC, cos.total_spent DESC;
