
WITH RECURSIVE SupplyChain AS (
    SELECT s.s_suppkey, s.s_name, p.p_partkey, p.p_name, ps.ps_availqty, ps.ps_supplycost,
           ROW_NUMBER() OVER (PARTITION BY s.s_suppkey ORDER BY ps.ps_supplycost DESC) AS rank
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN part p ON ps.ps_partkey = p.p_partkey
    WHERE s.s_acctbal > 5000
),
PopularProducts AS (
    SELECT l.l_partkey, SUM(l.l_quantity) AS total_quantity_sold
    FROM lineitem l
    JOIN orders o ON l.l_orderkey = o.o_orderkey
    WHERE o.o_orderdate BETWEEN DATE '1997-01-01' AND DATE '1997-12-31'
    GROUP BY l.l_partkey
    HAVING SUM(l.l_quantity) > 100
),
TopSuppliers AS (
    SELECT s.s_suppkey, s.s_name, SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_value
    FROM SupplyChain sc
    JOIN supplier s ON sc.s_suppkey = s.s_suppkey
    GROUP BY s.s_suppkey, s.s_name
    ORDER BY total_supply_value DESC
    LIMIT 10
)
SELECT tp.s_name, tp.total_supply_value, pp.p_name, pp.total_quantity_sold
FROM TopSuppliers tp
JOIN PopularProducts pp ON tp.s_suppkey = (SELECT ps.ps_suppkey
                                            FROM partsupp ps
                                            WHERE ps.ps_partkey = pp.l_partkey
                                            ORDER BY ps.ps_supplycost DESC
                                            LIMIT 1)
ORDER BY tp.total_supply_value DESC, pp.total_quantity_sold DESC;
