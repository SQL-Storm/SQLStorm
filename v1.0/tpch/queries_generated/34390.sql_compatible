
WITH RECURSIVE SupplierHierarchy AS (
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, 1 AS level
    FROM supplier s
    WHERE s.s_acctbal > 500.00
    UNION ALL
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, sh.level + 1
    FROM supplier s
    JOIN SupplierHierarchy sh ON s.s_nationkey = sh.s_nationkey
    WHERE sh.level < 5
),
RevenueByPart AS (
    SELECT ps.ps_partkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM lineitem l
    JOIN partsupp ps ON l.l_partkey = ps.ps_partkey
    WHERE l.l_shipdate BETWEEN DATE '1997-01-01' AND DATE '1997-12-31'
    GROUP BY ps.ps_partkey
),
RankedParts AS (
    SELECT p.p_partkey, p.p_name, rbp.total_revenue,
           RANK() OVER (ORDER BY rbp.total_revenue DESC) AS revenue_rank
    FROM part p
    LEFT JOIN RevenueByPart rbp ON p.p_partkey = rbp.ps_partkey
)
SELECT r.r_name AS region_name, n.n_name AS nation_name, sp.s_name AS supplier_name,
       p.p_name AS part_name, rp.total_revenue, rp.revenue_rank
FROM region r
JOIN nation n ON r.r_regionkey = n.n_regionkey
JOIN supplier sp ON n.n_nationkey = sp.s_nationkey
LEFT JOIN RankedParts rp ON sp.s_suppkey IN (SELECT ps.ps_suppkey
                                             FROM partsupp ps
                                             WHERE ps.ps_partkey IN (SELECT p.p_partkey
                                                                     FROM part p))
WHERE rp.revenue_rank <= 10 OR rp.total_revenue IS NULL
ORDER BY region_name, nation_name, supplier_name, rp.revenue_rank;
