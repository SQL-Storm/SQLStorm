
SELECT 
    SUBSTRING(p.p_name, 1, 10) AS short_part_name,
    COUNT(DISTINCT s.s_suppkey) AS supplier_count,
    AVG(ps.ps_supplycost) AS average_supply_cost,
    REGEXP_REPLACE(r.r_name, '[^a-zA-Z]', '') AS cleaned_region_name,
    CHAR_LENGTH(n.n_comment) AS nation_comment_length,
    CONCAT(c.c_name, ' <', c.c_phone, '>') AS customer_contact
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
JOIN 
    customer c ON c.c_nationkey = n.n_nationkey
WHERE 
    p.p_retailprice > (SELECT AVG(p2.p_retailprice) FROM part p2)
    AND n.n_name LIKE 'A%'
GROUP BY 
    p.p_name, 
    r.r_name, 
    n.n_comment, 
    c.c_name, 
    c.c_phone
ORDER BY 
    average_supply_cost DESC, 
    supplier_count ASC;
