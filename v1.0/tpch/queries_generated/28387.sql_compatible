
WITH SupplierDetails AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        s.s_acctbal, 
        s.s_comment, 
        SUBSTRING(s.s_address FROM 1 FOR 20) AS short_address,
        REPLACE(s.s_comment, 'unreliable', 'trusted') AS modified_comment
    FROM supplier s
),
PartDetails AS (
    SELECT 
        p.p_partkey, 
        p.p_name, 
        CONCAT(p.p_mfgr, ' ', p.p_brand) AS manufacturer_brand,
        CONCAT('Type: ', p.p_type, ', Size: ', p.p_size) AS part_description
    FROM part p
),
CustomerOrders AS (
    SELECT 
        c.c_custkey, 
        c.c_name, 
        o.o_orderkey, 
        o.o_orderdate,
        STRING_AGG(CONCAT('Order: ', o.o_orderkey, ', Total: ', o.o_totalprice) 
                   ORDER BY o.o_orderdate DESC) AS order_summary
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    GROUP BY c.c_custkey, c.c_name
)
SELECT 
    sd.s_name AS supplier_name,
    pd.p_name AS part_name,
    cd.c_name AS customer_name,
    cd.order_summary,
    sd.short_address,
    sd.modified_comment
FROM SupplierDetails sd
JOIN partsupp ps ON sd.s_suppkey = ps.ps_suppkey
JOIN PartDetails pd ON ps.ps_partkey = pd.p_partkey
JOIN CustomerOrders cd ON cd.o_orderkey IN (
    SELECT o.o_orderkey 
    FROM orders o 
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey 
    WHERE l.l_suppkey = sd.s_suppkey
)
WHERE sd.s_acctbal > 1000.00
ORDER BY supplier_name, part_name, customer_name;
