
SELECT 
    CONCAT(s.s_name, ' from ', n.r_name, ' needs ', ps.ps_availqty, ' of ', p.p_name) AS Supplier_Product_Need,
    LENGTH(p.p_comment) AS Comment_Length,
    UPPER(p.p_type) AS Uppercase_Type,
    SUBSTRING(s.s_comment, 1, 30) || '...' AS Shortened_Comment,
    COUNT(DISTINCT c.c_custkey) OVER (PARTITION BY s.s_nationkey ORDER BY s.s_suppkey) AS Unique_Customers_Served
FROM 
    supplier s 
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON p.p_partkey = ps.ps_partkey
JOIN 
    customer c ON c.c_nationkey = n.n_nationkey
WHERE 
    p.p_retailprice > 50.00 
    AND s.s_comment LIKE '%loyal%'
GROUP BY 
    s.s_name, n.r_name, ps.ps_availqty, p.p_name, p.p_comment, p.p_type, s.s_comment, s.s_nationkey, s.s_suppkey
ORDER BY 
    Comment_Length DESC, Uppercase_Type
LIMIT 100;
