SELECT 
    CONCAT('Supplier: ', s.s_name, ' | Part: ', p.p_name, 
           ' | Quantity: ', ps.ps_availqty, 
           ' | Retail Price: $', FORMAT(p.p_retailprice, 2), 
           ' | Order Total: $', FORMAT(SUM(l.l_extendedprice * (1 - l.l_discount)), 2)) AS benchmark_info,
    s.s_suppkey, 
    p.p_partkey
FROM 
    supplier s
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    lineitem l ON l.l_partkey = p.p_partkey
WHERE 
    s.s_acctbal > 10000 AND 
    l.l_shipdate BETWEEN '1997-01-01' AND '1997-12-31'
GROUP BY 
    s.s_suppkey, p.p_partkey, s.s_name, p.p_name, ps.ps_availqty, p.p_retailprice
ORDER BY 
    benchmark_info DESC;