SELECT 
    CONCAT('Supplier: ', s_name, ', Address: ', s_address, ', Items Delivered: ', 
        GROUP_CONCAT(DISTINCT CONCAT(p_name, ' (Quantity: ', ps_availqty, ')') ORDER BY p_name ASC SEPARATOR '; ')) AS delivery_details,
    r_name AS region_name,
    COUNT(DISTINCT ps.ps_suppkey) AS total_suppliers,
    SUM(CASE WHEN l_shipmode = 'AIR' THEN l_extendedprice ELSE 0 END) AS air_shipment_value,
    AVG(l_discount) AS average_discount_rate,
    MAX(l_tax) AS max_tax_on_lineitem
FROM 
    supplier s
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON p.p_partkey = ps.ps_partkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
JOIN 
    lineitem l ON l.l_suppkey = s.s_suppkey
WHERE 
    l_shipdate BETWEEN '1997-01-01' AND '1997-12-31' 
    AND s_acctbal > 10000
GROUP BY 
    r_name
HAVING 
    total_suppliers > 5
ORDER BY 
    region_name DESC;