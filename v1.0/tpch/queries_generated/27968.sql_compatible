
WITH String_Analysis AS (
    SELECT 
        p.p_name AS part_name,
        s.s_name AS supplier_name,
        c.c_name AS customer_name,
        o.o_orderkey AS order_id,
        LENGTH(p.p_name) AS name_length,
        SUBSTRING(p.p_name, 1, 5) AS name_prefix,
        UPPER(p.p_name) AS name_uppercase,
        CONCAT('Supplier: ', s.s_name, ', Part: ', p.p_name) AS combined_info,
        COUNT(DISTINCT o.o_orderkey) OVER(PARTITION BY p.p_partkey) AS order_count
    FROM 
        part p
    JOIN 
        partsupp ps ON p.p_partkey = ps.ps_partkey
    JOIN 
        supplier s ON ps.ps_suppkey = s.s_suppkey
    JOIN 
        lineitem l ON p.p_partkey = l.l_partkey
    JOIN 
        orders o ON l.l_orderkey = o.o_orderkey
    JOIN 
        customer c ON o.o_custkey = c.c_custkey
    WHERE 
        LENGTH(p.p_name) > 20
        AND s.s_acctbal > 5000.00
)
SELECT 
    part_name,
    supplier_name,
    customer_name,
    order_id,
    name_length,
    name_prefix,
    name_uppercase,
    combined_info,
    order_count
FROM 
    String_Analysis
ORDER BY 
    name_length DESC, order_count DESC
LIMIT 100;
