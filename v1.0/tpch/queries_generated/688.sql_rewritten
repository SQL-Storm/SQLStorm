WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        ROW_NUMBER() OVER (PARTITION BY ps_partkey ORDER BY s.s_acctbal DESC) AS rn
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    WHERE 
        ps.ps_availqty > 0
),
TotalSales AS (
    SELECT 
        l.l_partkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM 
        lineitem l
    JOIN 
        orders o ON l.l_orderkey = o.o_orderkey
    WHERE 
        o.o_orderdate >= DATE '1997-01-01' 
        AND o.o_orderdate < DATE '1998-01-01'
    GROUP BY 
        l.l_partkey
),
SupplierTopRevenue AS (
    SELECT 
        ps.ps_partkey,
        rs.s_name,
        rs.s_acctbal,
        TRIM(n.n_name) AS nation_name
    FROM 
        RankedSuppliers rs
    LEFT JOIN 
        partsupp ps ON rs.s_suppkey = ps.ps_suppkey
    LEFT JOIN 
        nation n ON n.n_nationkey = (SELECT c.c_nationkey FROM customer c WHERE c.c_custkey = (SELECT o.o_custkey FROM orders o WHERE o.o_orderkey IN (SELECT l.l_orderkey FROM lineitem l WHERE l.l_partkey = ps.ps_partkey LIMIT 1) LIMIT 1))
    WHERE 
        rs.rn = 1
)
SELECT 
    p.p_partkey,
    p.p_name,
    COALESCE(tr.total_revenue, 0) AS total_revenue,
    COALESCE(st.s_name, 'No Supplier') AS top_supplier,
    COALESCE(st.nation_name, 'Unknown Nation') AS supplier_nation
FROM 
    part p
LEFT JOIN 
    TotalSales tr ON p.p_partkey = tr.l_partkey
LEFT JOIN 
    SupplierTopRevenue st ON p.p_partkey = st.ps_partkey
WHERE 
    p.p_retailprice > (SELECT AVG(p2.p_retailprice) FROM part p2)
ORDER BY 
    total_revenue DESC, p.p_name ASC;