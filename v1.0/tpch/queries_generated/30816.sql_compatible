
WITH RECURSIVE supplier_hierarchy AS (
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, s.s_acctbal, 
           (SELECT COUNT(*) FROM partsupp ps WHERE ps.ps_suppkey = s.s_suppkey) AS part_count
    FROM supplier s
    WHERE s.s_acctbal > 50000

    UNION ALL

    SELECT s.s_suppkey, s.s_name, s.s_nationkey, s.s_acctbal, 
           (SELECT COUNT(*) FROM partsupp ps WHERE ps.ps_suppkey = s.s_suppkey) AS part_count
    FROM supplier s
    INNER JOIN supplier_hierarchy sh ON sh.s_nationkey = s.s_nationkey
    WHERE s.s_acctbal < sh.s_acctbal
),

customer_order_summary AS (
    SELECT c.c_custkey, c.c_name, COUNT(o.o_orderkey) AS total_orders, 
           SUM(o.o_totalprice) AS total_spent
    FROM customer c
    LEFT JOIN orders o ON c.c_custkey = o.o_custkey
    GROUP BY c.c_custkey, c.c_name
),

lineitem_analysis AS (
    SELECT l.l_orderkey, COUNT(*) AS line_count,
           SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM lineitem l
    WHERE l.l_shipmode = 'AIR' AND l.l_returnflag = 'N'
    GROUP BY l.l_orderkey
),

nation_supplier_counts AS (
    SELECT n.n_name, COUNT(DISTINCT s.s_suppkey) AS num_suppliers
    FROM nation n
    LEFT JOIN supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY n.n_name
)

SELECT n.n_name, ns.num_suppliers, AVG(cus.total_spent) AS avg_customer_spent,
       SUM(COALESCE(la.total_revenue, 0)) AS total_revenue_from_orders,
       SUM(sh.part_count) AS total_parts_per_supplier
FROM nation_supplier_counts ns
LEFT JOIN customer_order_summary cus ON ns.n_name = 
    (SELECT n.n_name FROM nation n WHERE n.n_nationkey = (SELECT DISTINCT c.c_nationkey FROM customer c WHERE c.c_custkey = cus.c_custkey))
LEFT JOIN lineitem_analysis la ON la.l_orderkey IN 
    (SELECT o.o_orderkey FROM orders o WHERE o.o_custkey IN 
        (SELECT c.c_custkey FROM customer c WHERE c.c_nationkey = ns.n_nationkey))
LEFT JOIN supplier_hierarchy sh ON sh.s_nationkey = ns.n_name
GROUP BY n.n_name, ns.num_suppliers;
