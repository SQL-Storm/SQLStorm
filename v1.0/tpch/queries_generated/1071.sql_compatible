
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        s.s_acctbal, 
        RANK() OVER (PARTITION BY p.p_partkey ORDER BY s.s_acctbal DESC) AS rank
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
), 
CustomerOrderSummary AS (
    SELECT 
        c.c_custkey, 
        c.c_name, 
        COUNT(DISTINCT o.o_orderkey) AS total_orders,
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
), 
HighSpenderSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        COALESCE(SUM(l.l_extendedprice * (1 - l.l_discount)), 0) AS total_sales
    FROM 
        supplier s
    LEFT JOIN 
        lineitem l ON s.s_suppkey = l.l_suppkey
    LEFT JOIN 
        partsupp ps ON ps.ps_suppkey = s.s_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name
    HAVING 
        COALESCE(SUM(l.l_extendedprice * (1 - l.l_discount)), 0) > 100000
)
SELECT 
    r.n_name AS nation,
    COUNT(DISTINCT cs.c_custkey) AS customer_count,
    SUM(cs.total_spent) AS total_sales,
    COUNT(DISTINCT hs.s_suppkey) AS supplier_count,
    SUM(hs.total_sales) AS supplier_sales
FROM 
    region r
JOIN 
    nation n ON r.r_regionkey = n.n_regionkey
JOIN 
    CustomerOrderSummary cs ON cs.c_custkey IN (SELECT c.c_custkey FROM customer c WHERE c.c_nationkey = n.n_nationkey)
FULL OUTER JOIN 
    HighSpenderSuppliers hs ON hs.s_suppkey IN (SELECT ps.ps_suppkey FROM partsupp ps JOIN part p ON ps.ps_partkey = p.p_partkey WHERE p.p_size > 10)
WHERE 
    COALESCE(cs.total_orders, 0) > 0 OR COALESCE(hs.total_sales, 0) > 0
GROUP BY 
    r.n_name
ORDER BY 
    total_sales DESC, supplier_count DESC;
