
SELECT 
    CONCAT('Supplier: ', s.s_name, ' | ', 'Nation: ', n.n_name, ' | ', 'Part Name: ', p.p_name, 
           ' | ', 'Retail Price: $', FORMAT(p.p_retailprice, 2), ' | ', 
           'Order Count: ', COUNT(o.o_orderkey), ' | ', 
           'Total Revenue: $', FORMAT(SUM(l.l_extendedprice * (1 - l.l_discount)), 2)) AS summary
FROM 
    supplier s
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
WHERE 
    n.n_name LIKE 'A%' AND 
    o.o_orderdate BETWEEN '1996-01-01' AND '1996-12-31' 
GROUP BY 
    s.s_name, n.n_name, p.p_name, p.p_retailprice
ORDER BY 
    SUM(l.l_extendedprice * (1 - l.l_discount)) DESC;
