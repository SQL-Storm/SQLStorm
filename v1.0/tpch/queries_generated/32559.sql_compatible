
WITH RECURSIVE SupplierHierarchy AS (
    SELECT s_suppkey, s_name, s_nationkey, s_acctbal, s_comment, 1 AS level
    FROM supplier
    WHERE s_acctbal > 100000.00
    
    UNION ALL
    
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, s.s_acctbal, s.s_comment, sh.level + 1
    FROM supplier s
    INNER JOIN SupplierHierarchy sh ON s.s_nationkey = sh.s_nationkey 
    WHERE s.s_acctbal < sh.s_acctbal
),
DiscountedItems AS (
    SELECT l.l_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_discounted_price
    FROM lineitem l
    WHERE l.l_discount > 0.05
    GROUP BY l.l_orderkey
),
CustomerRanked AS (
    SELECT c.c_custkey, c.c_name, c.c_acctbal,
           RANK() OVER (PARTITION BY c.c_nationkey ORDER BY c.c_acctbal DESC) AS rank
    FROM customer c
),
NationSummary AS (
    SELECT n.n_nationkey, n.n_name, COUNT(DISTINCT s.s_suppkey) AS supplier_count, SUM(s.s_acctbal) AS total_acctbal
    FROM nation n
    LEFT JOIN supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY n.n_nationkey, n.n_name
),
OrderSummary AS (
    SELECT o.o_orderkey, SUM(li.l_extendedprice * (1 - li.l_discount)) AS total_order_price
    FROM orders o
    JOIN lineitem li ON o.o_orderkey = li.l_orderkey
    GROUP BY o.o_orderkey
)
SELECT r.r_name AS region_name,  
       ns.supplier_count, 
       ns.total_acctbal,
       COUNT(DISTINCT cu.c_custkey) AS total_customers,
       SUM(os.total_order_price) AS total_order_value
FROM region r
JOIN NationSummary ns ON r.r_regionkey = ns.n_nationkey
LEFT JOIN CustomerRanked cu ON ns.n_nationkey = cu.c_nationkey AND cu.rank <= 5
LEFT JOIN OrderSummary os ON os.o_orderkey IS NOT NULL
WHERE ns.total_acctbal IS NOT NULL AND ns.supplier_count > 0
GROUP BY r.r_name, ns.supplier_count, ns.total_acctbal
ORDER BY r.r_name;
