SELECT 
    p.p_name,
    s.s_name,
    c.c_name,
    o.o_orderkey,
    COUNT(DISTINCT l.l_orderkey) AS order_count,
    SUM(l.l_extendedprice) AS total_revenue,
    AVG(l.l_discount) AS average_discount,
    CONCAT('Region: ', r.r_name, ', Nation: ', n.n_name) AS location_info,
    SUBSTRING_INDEX(p.p_comment, ' ', 3) AS short_comment
FROM 
    part p 
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey 
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey 
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey 
JOIN 
    region r ON n.n_regionkey = r.r_regionkey 
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey 
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey 
JOIN 
    customer c ON o.o_custkey = c.c_custkey 
WHERE 
    o.o_orderstatus = 'O' 
    AND l.l_shipmode IN ('AIR', 'SEA') 
    AND DATE(o.o_orderdate) BETWEEN '1997-01-01' AND '1997-12-31' 
GROUP BY 
    p.p_name, s.s_name, c.c_name, o.o_orderkey, r.r_name, n.n_name, p.p_comment 
HAVING 
    total_revenue > 10000 
ORDER BY 
    total_revenue DESC;