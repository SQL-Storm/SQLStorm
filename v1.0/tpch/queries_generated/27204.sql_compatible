
SELECT 
    p.p_name,
    COUNT(DISTINCT s.s_suppkey) AS supplier_count,
    SUM(ps.ps_availqty) AS total_available_quantity,
    STRING_AGG(DISTINCT CONCAT(s.s_name, ' (', s.s_address, ')'), '; ' ORDER BY s.s_name) AS supplier_details,
    MAX(p.p_retailprice) AS max_retail_price,
    MIN(p.p_retailprice) AS min_retail_price,
    AVG(p.p_retailprice) AS avg_retail_price,
    SUM(CASE WHEN LENGTH(p.p_comment) > 20 THEN 1 ELSE 0 END) AS long_comments_count
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
JOIN 
    customer c ON o.o_custkey = c.c_custkey
WHERE 
    LENGTH(p.p_name) BETWEEN 5 AND 15
    AND s.s_acctbal > 1000.00
    AND o.o_orderdate >= DATE '1996-01-01' 
    AND o.o_orderdate < DATE '1997-01-01'
GROUP BY 
    p.p_name
HAVING 
    COUNT(DISTINCT s.s_suppkey) > 2
ORDER BY 
    avg_retail_price DESC;
