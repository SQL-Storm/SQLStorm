
WITH RankedSuppliers AS (
    SELECT s_suppkey, s_name, s_acctbal, RANK() OVER (PARTITION BY s_nationkey ORDER BY s_acctbal DESC) AS supplier_rank
    FROM supplier
), 
HighValueParts AS (
    SELECT p_partkey, p_name, p_retailprice, 
           (SELECT COUNT(*) 
            FROM partsupp ps 
            WHERE ps.ps_partkey = p.p_partkey AND ps.ps_supplycost < (SELECT AVG(ps_supplycost) FROM partsupp)) AS cheaper_suppliers
    FROM part p
    WHERE p_retailprice > (
        SELECT AVG(p_retailprice) FROM part 
        WHERE p_size < 10
    )
), 
OrderDetails AS (
    SELECT o.o_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_value
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE o.o_orderstatus = 'O' AND l.l_shipdate > '1997-01-01'
    GROUP BY o.o_orderkey
)

SELECT 
    r.r_name,
    COUNT(DISTINCT s.s_suppkey) AS supplier_count,
    AVG(COALESCE(rv.total_value, 0)) AS avg_order_value,
    SUM(COALESCE(hvp.cheaper_suppliers, 0)) AS total_cheaper_suppliers
FROM region r
LEFT JOIN nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN RankedSuppliers s ON n.n_nationkey = s.s_nationkey AND s.supplier_rank <= 5
LEFT JOIN HighValueParts hvp ON s.s_suppkey = hvp.p_partkey
LEFT JOIN OrderDetails rv ON s.s_suppkey = rv.o_orderkey 
WHERE r.r_name LIKE 'A%' 
  AND s.s_acctbal IS NOT NULL
  AND (n.n_comment IS NULL OR n.n_comment != '')
GROUP BY r.r_name
HAVING COUNT(DISTINCT s.s_suppkey) > 0
ORDER BY r.r_name ASC;
