WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        s.s_acctbal, 
        n.n_name AS nation_name, 
        RANK() OVER (PARTITION BY n.n_name ORDER BY s.s_acctbal DESC) AS rank_acctbal
    FROM 
        supplier s
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
), 
TopSuppliers AS (
    SELECT 
        r.nation_name, 
        r.s_suppkey, 
        r.s_name, 
        r.s_acctbal
    FROM 
        RankedSuppliers r
    WHERE 
        r.rank_acctbal <= 3
),
CustomerOrders AS (
    SELECT 
        c.c_custkey, 
        c.c_name, 
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
)
SELECT 
    t.nation_name, 
    t.s_name, 
    SUM(lo.l_extendedprice * (1 - lo.l_discount)) AS total_value, 
    co.total_spent
FROM 
    lineitem lo
JOIN 
    TopSuppliers t ON lo.l_suppkey = t.s_suppkey
JOIN 
    CustomerOrders co ON lo.l_orderkey IN (
        SELECT o_orderkey 
        FROM orders 
        WHERE o_orderstatus = 'O'
    )
WHERE 
    lo.l_shipdate >= '1997-01-01' 
    AND lo.l_shipdate < '1997-12-31'
GROUP BY 
    t.nation_name, 
    t.s_name, 
    co.total_spent
HAVING 
    SUM(lo.l_extendedprice * (1 - lo.l_discount)) > 50000
ORDER BY 
    t.nation_name, 
    total_value DESC;