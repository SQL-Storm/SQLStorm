WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        DENSE_RANK() OVER (ORDER BY s.s_acctbal DESC) as rank
    FROM 
        supplier s
    WHERE 
        s.s_acctbal > (
            SELECT AVG(s2.s_acctbal) 
            FROM supplier s2
        )
),
CustomerSpent AS (
    SELECT 
        c.c_custkey,
        SUM(o.o_totalprice) as total_spent
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey
),
PartSupplierDetails AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        ps.ps_supplycost,
        ps.ps_availqty
    FROM 
        part p
    JOIN 
        partsupp ps ON p.p_partkey = ps.ps_partkey
),
HighValueOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_orderstatus,
        COUNT(l.l_orderkey) AS line_count,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_value
    FROM 
        orders o
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderdate >= DATE '1997-01-01'
    GROUP BY 
        o.o_orderkey, o.o_orderstatus
    HAVING 
        total_value > 1000
)
SELECT 
    r.s_suppkey,
    r.s_name,
    COUNT(DISTINCT ps.p_partkey) AS parts_supplied,
    AVG(ps.ps_supplycost) AS avg_supply_cost,
    SUM(CASE WHEN cs.total_spent IS NOT NULL THEN cs.total_spent ELSE 0 END) AS customer_total_spent,
    HVO.o_orderkey,
    HVO.line_count,
    HVO.total_value
FROM 
    RankedSuppliers r
LEFT JOIN 
    PartSupplierDetails ps ON r.s_suppkey = ps.ps_suppkey
LEFT JOIN 
    CustomerSpent cs ON cs.c_custkey IN (
        SELECT c.c_custkey 
        FROM customer c
        WHERE c.c_nationkey IN (SELECT n.n_nationkey FROM nation n WHERE n.n_regionkey = r.s_suppkey)
    )
LEFT JOIN 
    HighValueOrders HVO ON HVO.o_orderkey = (
        SELECT o.o_orderkey 
        FROM orders o 
        WHERE o.o_custkey IN (
            SELECT c.c_custkey 
            FROM customer c 
            WHERE c.c_nationkey = r.s_suppkey
        )
        ORDER BY o.o_totalprice DESC
        LIMIT 1
    )
GROUP BY 
    r.s_suppkey, r.s_name, HVO.o_orderkey, HVO.line_count, HVO.total_value
ORDER BY 
    r.s_acctbal DESC;