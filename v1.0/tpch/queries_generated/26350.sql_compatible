
WITH SupplierDetails AS (
    SELECT s.s_suppkey, s.s_name, s.s_address, s.s_acctbal, n.n_name AS nation_name
    FROM supplier s
    JOIN nation n ON s.s_nationkey = n.n_nationkey
),
PartDetails AS (
    SELECT p.p_partkey, p.p_name, p.p_brand, p.p_type, p.p_size, p.p_retailprice, p.p_comment
    FROM part p
    WHERE p.p_retailprice > (SELECT AVG(p2.p_retailprice) FROM part p2)
),
TopOrders AS (
    SELECT o.o_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY o.o_orderkey
    ORDER BY total_revenue DESC
    LIMIT 5
)
SELECT sd.s_name AS supplier_name, 
       sd.s_address AS supplier_address,
       pd.p_name AS part_name,
       pd.p_brand AS part_brand,
       pd.p_type AS part_type,
       pd.p_retailprice AS part_price,
       to.total_revenue AS order_revenue
FROM SupplierDetails sd
JOIN partsupp ps ON sd.s_suppkey = ps.ps_suppkey
JOIN PartDetails pd ON ps.ps_partkey = pd.p_partkey
JOIN lineitem l ON pd.p_partkey = l.l_partkey
JOIN TopOrders to ON l.l_orderkey = to.o_orderkey
WHERE sd.s_acctbal > 1000 
  AND pd.p_size BETWEEN 10 AND 20
  AND l.l_quantity > 0
ORDER BY to.total_revenue DESC, sd.s_name;
