WITH RECURSIVE nation_hierarchy AS (
    SELECT n_nationkey, n_name, n_regionkey, 0 as level
    FROM nation
    WHERE n_regionkey IS NOT NULL
    UNION ALL
    SELECT n.n_nationkey, n.n_name, n.n_regionkey, nh.level + 1
    FROM nation n
    JOIN nation_hierarchy nh ON n.n_regionkey = nh.n_nationkey
),
avg_price_per_supplier AS (
    SELECT ps_suppkey, AVG(ps_supplycost) AS avg_supply_cost
    FROM partsupp
    GROUP BY ps_suppkey
),
order_summary AS (
    SELECT o.o_orderkey, o.o_orderdate, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE l.l_shipdate >= '1997-01-01' 
    GROUP BY o.o_orderkey, o.o_orderdate
),
customer_ranked AS (
    SELECT c.c_custkey, c.c_name, SUM(o.o_totalprice) AS total_spent,
           RANK() OVER (PARTITION BY c.c_nationkey ORDER BY SUM(o.o_totalprice) DESC) AS rank_within_nation
    FROM customer c
    LEFT JOIN orders o ON c.c_custkey = o.o_custkey
    GROUP BY c.c_custkey, c.c_name
)
SELECT r.r_name, 
       COUNT(DISTINCT c.c_custkey) AS num_customers,
       AVG(o.total_revenue) AS avg_order_value,
       MAX(sp.avg_supply_cost) AS max_avg_supply_cost,
       CASE WHEN COUNT(o.o_orderkey) > 10 THEN 'High Volume' ELSE 'Low Volume' END AS order_volume_category
FROM region r
LEFT JOIN nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN customer_ranked c ON n.n_nationkey = c.c_nationkey AND c.rank_within_nation <= 10
LEFT JOIN order_summary o ON c.c_custkey = o.o_orderkey
LEFT JOIN avg_price_per_supplier sp ON sp.ps_suppkey = o.o_orderkey
GROUP BY r.r_name
HAVING COUNT(DISTINCT c.c_custkey) > 5
ORDER BY num_customers DESC, avg_order_value DESC;