
SELECT 
    CONCAT('Supplier ', s.s_name, ' from nation ', n.n_name, ' supplies the part ', p.p_name, ' of type ', p.p_type, 
           ' in a ', p.p_container, ' container priced at ', FORMAT(p.p_retailprice, 2), 
           '. Additional comments: ', p.p_comment) AS detailed_description,
    COUNT(DISTINCT c.c_custkey) AS total_customers,
    AVG(o.o_totalprice) AS average_order_value,
    SUM(CASE WHEN l.l_returnflag = 'Y' THEN 1 ELSE 0 END) AS total_returns,
    r.r_name AS region_name
FROM 
    supplier s
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
JOIN 
    lineitem l ON l.l_suppkey = s.s_suppkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
JOIN 
    customer c ON o.o_custkey = c.c_custkey
WHERE 
    p.p_size > 10 
    AND o.o_orderdate BETWEEN '1997-01-01' AND '1997-12-31'
GROUP BY 
    s.s_suppkey, s.s_name, n.n_name, p.p_name, p.p_type, p.p_container, p.p_retailprice, p.p_comment, r.r_name
HAVING 
    AVG(o.o_totalprice) > 100
ORDER BY 
    r.r_name DESC, total_customers DESC;
