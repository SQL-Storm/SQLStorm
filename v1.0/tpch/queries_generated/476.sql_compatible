
WITH region_stats AS (
    SELECT 
        r.r_name,
        COUNT(n.n_nationkey) AS nation_count,
        SUM(s.s_acctbal) AS total_acctbal
    FROM 
        region r
    LEFT JOIN 
        nation n ON r.r_regionkey = n.n_regionkey
    LEFT JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY 
        r.r_name
),
top_customers AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        SUM(o.o_totalprice) AS total_spent,
        RANK() OVER (ORDER BY SUM(o.o_totalprice) DESC) AS rank
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        o.o_orderdate BETWEEN DATE '1997-01-01' AND DATE '1997-12-31'
    GROUP BY 
        c.c_custkey, c.c_name
),
part_supplier_details AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        SUM(ps.ps_availqty) AS total_available_qty,
        AVG(ps.ps_supplycost) AS avg_supply_cost
    FROM 
        part p
    JOIN 
        partsupp ps ON p.p_partkey = ps.ps_partkey
    GROUP BY 
        p.p_partkey, p.p_name
)
SELECT 
    r.r_name,
    r.nation_count,
    r.total_acctbal,
    tc.c_custkey,
    tc.c_name,
    tc.total_spent,
    ps.p_partkey,
    ps.p_name,
    ps.total_available_qty,
    ps.avg_supply_cost
FROM 
    region_stats r
FULL OUTER JOIN 
    top_customers tc ON (r.nation_count > 10 OR r.nation_count IS NULL)
LEFT JOIN 
    part_supplier_details ps ON (ps.total_available_qty > 100 OR ps.total_available_qty IS NULL)
WHERE 
    (tc.rank < 11 OR tc.rank IS NULL)
ORDER BY 
    r.r_name, tc.total_spent DESC, ps.avg_supply_cost;
