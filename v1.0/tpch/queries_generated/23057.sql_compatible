
WITH RegionSales AS (
    SELECT 
        r.r_name AS region,
        SUM(o.o_totalprice) AS total_sales,
        COUNT(DISTINCT c.c_custkey) AS unique_customers,
        AVG(o.o_totalprice) AS average_order_value,
        COUNT(o.o_orderkey) AS total_orders
    FROM 
        region r
    LEFT JOIN 
        nation n ON r.r_regionkey = n.n_regionkey
    LEFT JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    LEFT JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    LEFT JOIN 
        part p ON ps.ps_partkey = p.p_partkey
    LEFT JOIN 
        lineitem l ON p.p_partkey = l.l_partkey
    LEFT JOIN 
        orders o ON l.l_orderkey = o.o_orderkey
    LEFT JOIN 
        customer c ON o.o_custkey = c.c_custkey
    GROUP BY 
        r.r_name
), 
HighValueOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_custkey,
        o.o_totalprice,
        ROW_NUMBER() OVER (PARTITION BY o.o_custkey ORDER BY o.o_totalprice DESC) AS order_rank
    FROM 
        orders o
    WHERE 
        o.o_totalprice > (SELECT AVG(o_totalprice) FROM orders) 
)
SELECT 
    COALESCE(r.region, 'Unknown Region') AS region,
    rs.total_sales,
    rs.unique_customers,
    COALESCE(hvo.o_totalprice, 0) AS high_value_order,
    CASE 
        WHEN hvo.order_rank = 1 THEN 'Top Order'
        ELSE 'Other'
    END AS order_category
FROM 
    RegionSales rs
FULL OUTER JOIN 
    HighValueOrders hvo ON rs.region = (
        SELECT r.r_name 
        FROM region r 
        WHERE r.r_regionkey = (
            SELECT n.n_regionkey 
            FROM nation n 
            WHERE n.n_nationkey = (
                SELECT c.c_nationkey 
                FROM customer c 
                WHERE c.c_custkey = hvo.o_custkey 
                LIMIT 1
            ) 
            LIMIT 1
        )
    )
ORDER BY 
    rs.total_sales DESC NULLS LAST, 
    hvo.o_totalprice DESC NULLS FIRST;
