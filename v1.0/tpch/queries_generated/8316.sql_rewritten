WITH RankedOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_orderstatus,
        o.o_totalprice,
        o.o_orderdate,
        o.o_orderpriority,
        ROW_NUMBER() OVER (PARTITION BY o.o_orderstatus ORDER BY o.o_totalprice DESC) AS order_rank
    FROM 
        orders o
    WHERE 
        o.o_orderdate >= DATE '1997-01-01' AND o.o_orderdate < DATE '1997-12-31'
), 
TopNations AS (
    SELECT 
        n.n_nationkey,
        n.n_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM 
        nation n
    JOIN supplier s ON n.n_nationkey = s.s_nationkey
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN lineitem l ON ps.ps_partkey = l.l_partkey
    JOIN RankedOrders r ON r.o_orderkey = l.l_orderkey
    GROUP BY 
        n.n_nationkey, n.n_name
    ORDER BY 
        total_revenue DESC
    LIMIT 5
)
SELECT 
    t.n_name AS nation_name,
    t.total_revenue,
    COUNT(DISTINCT r.o_orderkey) AS number_of_orders,
    AVG(o.o_totalprice) AS average_order_value
FROM 
    TopNations t
JOIN 
    orders o ON o.o_orderkey IN (SELECT o_orderkey FROM RankedOrders WHERE order_rank <= 10)
JOIN 
    lineitem l ON o.o_orderkey = l.l_orderkey
JOIN 
    supplier s ON s.s_suppkey = l.l_suppkey
JOIN 
    nation n ON n.n_nationkey = s.s_nationkey
GROUP BY 
    t.n_nationkey, t.n_name, t.total_revenue
ORDER BY 
    t.total_revenue DESC;