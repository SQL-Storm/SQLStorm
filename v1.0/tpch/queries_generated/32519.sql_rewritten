WITH RECURSIVE supplier_hierarchy AS (
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, 0 AS level
    FROM supplier s
    WHERE s.s_acctbal > (SELECT AVG(s_acctbal) FROM supplier)
    UNION ALL
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, sh.level + 1
    FROM supplier s
    JOIN supplier_hierarchy sh ON s.s_nationkey = sh.s_nationkey
    WHERE sh.level < 3
),
orders_summary AS (
    SELECT o.o_custkey, COUNT(DISTINCT o.o_orderkey) AS total_orders,
           SUM(o.o_totalprice) AS total_revenue
    FROM orders o
    GROUP BY o.o_custkey
),
lineitem_analysis AS (
    SELECT l.l_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS net_price
    FROM lineitem l
    WHERE l.l_shipdate >= '1997-01-01' AND l.l_shipdate < '1998-01-01'
    GROUP BY l.l_orderkey
),
nation_summary AS (
    SELECT n.n_nationkey, n.n_name, COUNT(DISTINCT s.s_suppkey) AS supplier_count, 
           STRING_AGG(DISTINCT s.s_name, ', ') AS suppliers
    FROM nation n
    LEFT JOIN supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY n.n_nationkey, n.n_name
)
SELECT ns.n_name,
       ns.supplier_count,
       ns.suppliers,
       os.total_orders,
       os.total_revenue,
       COALESCE(la.net_price, 0) AS total_net_price,
       sh.level AS supplier_hierarchy_level
FROM nation_summary ns
LEFT JOIN orders_summary os ON os.o_custkey IN (SELECT c.c_custkey FROM customer c WHERE c.c_nationkey = ns.n_nationkey)
LEFT JOIN lineitem_analysis la ON la.l_orderkey IN (SELECT o.o_orderkey FROM orders o WHERE o.o_custkey IN (SELECT c.c_custkey FROM customer c WHERE c.c_nationkey = ns.n_nationkey))
LEFT JOIN supplier_hierarchy sh ON sh.s_nationkey = ns.n_nationkey
WHERE ns.supplier_count > 2
ORDER BY ns.n_name DESC, total_revenue DESC;