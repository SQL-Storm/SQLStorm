
WITH String_Aggregation AS (
    SELECT 
        p.p_name, 
        STRING_AGG(CONCAT(s.s_name, ' - ', c.c_name), '; ') AS supplier_customer,
        ROW_NUMBER() OVER (PARTITION BY p.p_partkey ORDER BY s.s_name) AS rn,
        CONCAT(SUBSTRING(s.s_comment, 1, 20), '...') AS supplier_comment_short
    FROM 
        part p
    JOIN 
        partsupp ps ON p.p_partkey = ps.ps_partkey
    JOIN 
        supplier s ON ps.ps_suppkey = s.s_suppkey
    JOIN 
        customer c ON c.c_nationkey = s.s_nationkey
    WHERE 
        p.p_size > 10 AND s.s_acctbal > 1000
    GROUP BY 
        p.p_name, p.p_partkey, s.s_name, c.c_name, s.s_comment
), Filtered_Aggregation AS (
    SELECT 
        p_name,
        suppliers_customers,
        STRING_AGG(short_comments, '; ') AS short_comments
    FROM (
        SELECT 
            p_name,
            supplier_customer,
            supplier_comment_short,
            rn
        FROM 
            String_Aggregation
        WHERE 
            rn <= 3
    ) AS sub
    GROUP BY 
        p_name
)
SELECT 
    p_name, 
    suppliers_customers, 
    short_comments
FROM 
    Filtered_Aggregation
WHERE 
    CHAR_LENGTH(suppliers_customers) > 50
ORDER BY 
    p_name DESC;
