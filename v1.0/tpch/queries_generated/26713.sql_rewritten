SELECT 
    p.p_name, 
    COUNT(DISTINCT l.l_orderkey) AS total_orders,
    SUM(l.l_quantity) AS total_quantity,
    AVG(l.l_extendedprice) AS avg_price,
    SUM(CASE 
            WHEN l.l_discount > 0 THEN l.l_extendedprice * (1 - l.l_discount) 
            ELSE 0 
        END) AS total_discounted_price,
    LEFT(l.l_comment, 20) AS short_comment,
    SUBSTRING_INDEX(SUBSTRING_INDEX(s.s_name, ' ', 1), ' ', -1) AS first_supplier_name_word
FROM 
    part p 
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey 
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey 
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey 
WHERE 
    p.p_name LIKE '%widget%' 
    AND l.l_shipdate BETWEEN '1997-01-01' AND '1997-12-31' 
GROUP BY 
    p.p_name, short_comment, first_supplier_name_word 
HAVING 
    total_orders > 5
ORDER BY 
    total_quantity DESC;