
WITH RegionStats AS (
    SELECT 
        r.r_name,
        COUNT(DISTINCT n.n_nationkey) AS nation_count,
        SUM(s.s_acctbal) AS total_acctbal
    FROM 
        region r
    LEFT JOIN 
        nation n ON r.r_regionkey = n.n_regionkey
    LEFT JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY 
        r.r_name
),
TopCustomers AS (
    SELECT 
        c.c_custkey, 
        c.c_name,
        SUM(o.o_totalprice) AS total_spent,
        ROW_NUMBER() OVER (ORDER BY SUM(o.o_totalprice) DESC) AS rank
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        o.o_orderstatus = 'O'
    GROUP BY 
        c.c_custkey, c.c_name
)
SELECT 
    r.r_name AS region,
    rs.nation_count,
    rs.total_acctbal,
    tc.c_name AS top_customer,
    tc.total_spent
FROM 
    RegionStats rs
FULL OUTER JOIN 
    TopCustomers tc ON rs.nation_count > 5 
LEFT JOIN 
    orders o ON o.o_custkey = tc.c_custkey AND o.o_orderdate >= DATE '1997-01-01'
WHERE 
    (rs.total_acctbal IS NOT NULL OR tc.total_spent IS NOT NULL)
ORDER BY 
    r.r_name, tc.total_spent DESC;
