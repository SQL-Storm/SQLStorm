
SELECT 
    CONCAT(s.s_name, ' ', s.s_address) AS supplier_info,
    REPLACE(p.p_name, 'part', 'component') AS modified_part_name,
    SUBSTRING_INDEX(o.o_orderstatus, ' ', 1) AS first_order_status,
    CONCAT(r.r_name, ' | ', r.r_comment) AS region_details,
    COUNT(DISTINCT c.c_custkey) AS unique_customers,
    SUM(l.l_quantity) AS total_quantity,
    ROUND(AVG(p.p_retailprice), 2) AS avg_retail_price
FROM 
    supplier s
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
JOIN 
    customer c ON o.o_custkey = c.c_custkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
WHERE 
    l.l_shipdate >= '1997-01-01' 
    AND l.l_shipdate < '1998-01-01'
GROUP BY 
    s.s_suppkey, s.s_name, s.s_address, p.p_partkey, o.o_orderstatus, r.r_name, r.r_comment
ORDER BY 
    total_quantity DESC, avg_retail_price ASC;
