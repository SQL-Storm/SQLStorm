
WITH SupplierCost AS (
    SELECT 
        s.s_suppkey, 
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey
),
HighValueOrders AS (
    SELECT 
        o.o_orderkey, 
        o.o_totalprice, 
        c.c_custkey, 
        c.c_mktsegment
    FROM 
        orders o
    JOIN 
        customer c ON o.o_custkey = c.c_custkey
    WHERE 
        o.o_totalprice > (SELECT AVG(o_totalprice) FROM orders)
),
LineItemAnalysis AS (
    SELECT 
        l.l_orderkey, 
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS revenue,
        SUM(l.l_quantity) AS total_quantity
    FROM 
        lineitem l
    GROUP BY 
        l.l_orderkey
),
OrderRevenue AS (
    SELECT 
        h.o_orderkey,
        h.o_totalprice,
        l.total_quantity,
        l.revenue,
        h.c_custkey -- Added c_custkey for compatibility
    FROM 
        HighValueOrders h
    JOIN 
        LineItemAnalysis l ON h.o_orderkey = l.l_orderkey
)
SELECT 
    r.r_name AS region_name,
    COUNT(DISTINCT o.o_orderkey) AS number_of_orders,
    SUM(o.o_totalprice) AS total_revenue,
    AVG(sc.total_supply_cost) AS average_supplier_cost
FROM 
    OrderRevenue o
JOIN 
    nation n ON n.n_nationkey = (SELECT c.c_nationkey FROM customer c WHERE c.c_custkey = o.c_custkey LIMIT 1) -- Added LIMIT 1 for compatibility
JOIN 
    region r ON r.r_regionkey = n.n_regionkey
JOIN 
    SupplierCost sc ON sc.s_suppkey = (SELECT ps.ps_suppkey FROM partsupp ps WHERE ps.ps_partkey IN (SELECT l.l_partkey FROM lineitem l WHERE l.l_orderkey = o.o_orderkey LIMIT 1))
GROUP BY 
    r.r_name
ORDER BY 
    total_revenue DESC;
