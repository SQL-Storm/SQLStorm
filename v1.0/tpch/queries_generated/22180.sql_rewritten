WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        s.s_acctbal, 
        RANK() OVER (PARTITION BY p.p_brand ORDER BY s.s_acctbal DESC) AS rank
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
),
OrderSummaries AS (
    SELECT 
        o.o_orderkey, 
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
        COUNT(l.l_linenumber) AS line_count
    FROM 
        orders o
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderdate BETWEEN DATE '1996-01-01' AND DATE '1996-12-31'
    GROUP BY 
        o.o_orderkey
),
TopCustomers AS (
    SELECT 
        c.c_custkey, 
        c.c_name, 
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey
    HAVING 
        SUM(o.o_totalprice) > (SELECT AVG(o_totalprice) FROM orders)
),
SupplierDetails AS (
    SELECT 
        r.r_name,
        n.n_name,
        s.s_name,
        ps.ps_partkey,
        ps.ps_availqty,
        ps.ps_supplycost,
        RANK() OVER (PARTITION BY s.s_suppkey ORDER BY ps.ps_supplycost) as supply_rank
    FROM 
        supplier s
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
)
SELECT 
    c.c_name, 
    COALESCE(os.total_revenue, 0) AS total_revenue, 
    COALESCE(ts.total_spent, 0) AS total_spent,
    COUNT(DISTINCT sd.s_name) AS unique_suppliers,
    AVG(NULLIF(sd.ps_supplycost, 0)) AS avg_supply_cost
FROM 
    customer c
LEFT JOIN 
    OrderSummaries os ON c.c_custkey = os.l_orderkey
LEFT JOIN 
    TopCustomers ts ON c.c_custkey = ts.c_custkey
LEFT JOIN 
    SupplierDetails sd ON sd.ps_partkey IN (
        SELECT ps_partkey FROM partsupp WHERE ps_availqty > 0
        AND ps_supplycost < (SELECT AVG(ps_supplycost) FROM partsupp)
    ) 
GROUP BY 
    c.c_name
HAVING 
    COUNT(DISTINCT os.o_orderkey) > 5
ORDER BY 
    total_spent DESC, total_revenue DESC;