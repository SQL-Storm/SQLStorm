WITH RECURSIVE supplier_hierarchy AS (
    SELECT s_suppkey, s_name, s_nationkey, s_acctbal, 1 AS level
    FROM supplier
    WHERE s_acctbal > 1000
    UNION ALL
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, s.s_acctbal, sh.level + 1
    FROM supplier s
    JOIN supplier_hierarchy sh ON s.s_nationkey = sh.s_nationkey
    WHERE s.s_acctbal <= sh.s_acctbal
),
order_summary AS (
    SELECT o.o_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE o.o_orderdate >= DATE '1996-01-01'
    GROUP BY o.o_orderkey
),
region_supplier AS (
    SELECT r.r_name, COUNT(DISTINCT s.s_suppkey) AS supplier_count
    FROM region r
    LEFT JOIN nation n ON r.r_regionkey = n.n_regionkey
    LEFT JOIN supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY r.r_name
),
customer_avg_order AS (
    SELECT c.c_custkey, AVG(os.total_revenue) AS avg_order_value
    FROM customer c
    LEFT JOIN order_summary os ON c.c_custkey = os.o_orderkey
    GROUP BY c.c_custkey
),
max_avg_order AS (
    SELECT MAX(avg_order_value) AS highest_avg_order
    FROM customer_avg_order
)
SELECT r.r_name, rs.supplier_count, ca.avg_order_value
FROM region_supplier rs
JOIN customer_avg_order ca ON rs.supplier_count > 5
LEFT JOIN max_avg_order ma ON ca.avg_order_value = ma.highest_avg_order
WHERE rs.supplier_count IS NOT NULL 
AND (ca.avg_order_value IS NULL OR ma.highest_avg_order IS NOT NULL)
ORDER BY rs.supplier_count DESC, ca.avg_order_value DESC;