WITH RECURSIVE SupplierHierarchy AS (
    SELECT s_suppkey, s_name, s_nationkey, CAST(s_name AS VARCHAR(255)) AS hierarchy_path
    FROM supplier
    WHERE s_suppkey IN (SELECT DISTINCT ps_suppkey FROM partsupp)
    UNION ALL
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, CONCAT(sh.hierarchy_path, ' -> ', s.s_name)
    FROM supplier s
    JOIN SupplierHierarchy sh ON sh.s_nationkey = s.s_nationkey
    WHERE sh.s_suppkey <> s.s_suppkey
),
AggregatedSuppliers AS (
    SELECT sh.hierarchy_path, COUNT(DISTINCT o.o_orderkey) AS total_orders, SUM(o.o_totalprice) AS total_revenue
    FROM SupplierHierarchy sh
    JOIN partsupp ps ON sh.s_suppkey = ps.ps_suppkey
    JOIN lineitem l ON ps.ps_partkey = l.l_partkey
    JOIN orders o ON l.l_orderkey = o.o_orderkey
    WHERE o.o_orderdate >= DATE '1997-01-01'
    GROUP BY sh.hierarchy_path
),
RevenueRanked AS (
    SELECT *, RANK() OVER (ORDER BY total_revenue DESC) AS revenue_rank
    FROM AggregatedSuppliers
),
FilteredSuppliers AS (
    SELECT ah.hierarchy_path, ah.total_orders, ah.total_revenue
    FROM RevenueRanked ah
    WHERE ah.total_orders > 10 AND ah.total_revenue > (SELECT AVG(total_revenue) FROM RevenueRanked WHERE total_orders > 5)
),
FinalOutput AS (
    SELECT r.r_name AS region_name, fs.hierarchy_path, fs.total_orders, fs.total_revenue
    FROM FilteredSuppliers fs
    JOIN nation n ON n.n_nationkey = (SELECT s_nationkey FROM supplier s WHERE s.s_suppkey = CAST(SUBSTRING_INDEX(fs.hierarchy_path, ' -> ', -1) AS UNSIGNED))
    JOIN region r ON n.n_regionkey = r.r_regionkey
)
SELECT DISTINCT region_name, hierarchy_path, total_orders, total_revenue
FROM FinalOutput
WHERE total_revenue IS NOT NULL
ORDER BY total_revenue DESC
LIMIT 100;