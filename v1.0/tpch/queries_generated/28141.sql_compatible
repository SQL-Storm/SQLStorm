
SELECT 
    CONCAT('Part Name: ', p.p_name, ' | Supplier: ', s.s_name, ' | Quantity: ', ps.ps_availqty, ' | Total Price: ', 
           ROUND(l.l_extendedprice * (1 - l.l_discount), 2), ' | Order Date: ', TO_CHAR(o.o_orderdate, 'YYYY-MM-DD'))
    AS benchmark_string
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
WHERE 
    p.p_name LIKE '%widget%'
    AND o.o_orderdate BETWEEN '1997-01-01' AND '1997-12-31'
GROUP BY 
    p.p_name, s.s_name, ps.ps_availqty, l.l_extendedprice, l.l_discount, o.o_orderdate
ORDER BY 
    p.p_name, s.s_name;
