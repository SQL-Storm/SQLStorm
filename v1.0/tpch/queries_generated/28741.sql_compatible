
SELECT 
    SUBSTRING(p.p_name, 1, 20) AS short_name,
    COUNT(DISTINCT ps.ps_suppkey) AS supplier_count,
    SUM(ps.ps_availqty) AS total_available_quantity,
    AVG(ps.ps_supplycost) AS average_supply_cost,
    AVG(o.o_totalprice) AS average_order_total,
    n.n_name AS nation_name,
    r.r_name AS region_name
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
LEFT JOIN 
    orders o ON p.p_partkey IN (SELECT l.l_partkey FROM lineitem l WHERE l.l_orderkey = o.o_orderkey)
GROUP BY 
    p.p_name, n.n_name, r.r_name
HAVING 
    COUNT(DISTINCT ps.ps_suppkey) > 5 AND AVG(o.o_totalprice) > 100
ORDER BY 
    total_available_quantity DESC, short_name;
