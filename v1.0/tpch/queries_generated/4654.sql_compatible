
WITH RankedOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        o.o_custkey,
        o.o_totalprice,
        ROW_NUMBER() OVER (PARTITION BY o.o_custkey ORDER BY o.o_orderdate DESC) AS order_rank
    FROM 
        orders o
    WHERE 
        o.o_orderstatus = 'O'
),
SupplierPartData AS (
    SELECT 
        ps.ps_partkey,
        s.s_suppkey,
        s.s_acctbal,
        ps.ps_availqty,
        ps.ps_supplycost,
        p.p_name,
        PERCENTILE_CONT(0.5) WITHIN GROUP (ORDER BY ps.ps_supplycost) OVER (PARTITION BY ps.ps_partkey) AS median_supplycost
    FROM 
        partsupp ps
    JOIN 
        supplier s ON ps.ps_suppkey = s.s_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
),
CustomerOrderSummary AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        SUM(o.o_totalprice) AS total_spent,
        COUNT(o.o_orderkey) AS order_count
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
)
SELECT 
    n.n_name AS nation,
    p.p_name AS part_name,
    CONCAT(s.s_name, ' (', s.s_acctbal, ')') AS supplier_info,
    SUM(l.l_extendedprice * (1 - l.l_discount)) AS revenue,
    COUNT(DISTINCT o.o_orderkey) AS order_count,
    AVG(COALESCE(spd.median_supplycost, 0)) AS avg_median_supply_cost,
    COUNT(DISTINCT ro.o_orderkey) AS recent_order_count
FROM 
    lineitem l
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
JOIN 
    partsupp ps ON l.l_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    part p ON l.l_partkey = p.p_partkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
LEFT JOIN 
    SupplierPartData spd ON ps.ps_partkey = spd.ps_partkey
LEFT JOIN 
    RankedOrders ro ON o.o_custkey = ro.o_custkey AND ro.order_rank <= 5
WHERE 
    n.n_name IS NOT NULL
AND 
    l.l_shipdate >= '1995-01-01'
AND 
    l.l_shipdate < '1995-12-31'
GROUP BY 
    n.n_name, p.p_name, s.s_name, s.s_acctbal
HAVING 
    SUM(l.l_extendedprice * (1 - l.l_discount)) > 10000
ORDER BY 
    revenue DESC, nation;
