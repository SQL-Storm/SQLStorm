WITH RECURSIVE RegionHierarchy AS (
    SELECT r_regionkey, r_name, CAST(NULL AS CHAR(25)) AS parent_region
    FROM region
    WHERE r_regionkey = 1 
    UNION ALL
    SELECT r.r_regionkey, r.r_name, rh.r_name AS parent_region
    FROM region r
    JOIN RegionHierarchy rh ON r.r_regionkey <> rh.r_regionkey
)
, SupplierProduct AS (
    SELECT s.s_suppkey, SUM(ps.ps_supplycost * l.l_quantity) AS total_cost
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN lineitem l ON ps.ps_partkey = l.l_partkey
    WHERE l.l_shipdate >= '1997-01-01'
    GROUP BY s.s_suppkey
),
CustomerOrders AS (
    SELECT c.c_custkey, c.c_name, COUNT(o.o_orderkey) AS order_count, SUM(o.o_totalprice) AS total_spent
    FROM customer c
    LEFT JOIN orders o ON c.c_custkey = o.o_custkey
    WHERE c.c_acctbal > 0
    GROUP BY c.c_custkey, c.c_name
)
SELECT rh.r_name AS region_name,
       COALESCE(sp.total_cost, 0) AS supplier_total_cost,
       COALESCE(co.total_spent, 0) AS customer_total_spent,
       ROW_NUMBER() OVER (PARTITION BY rh.r_name ORDER BY COALESCE(sp.total_cost, 0) DESC) AS rank_supplier,
       ROW_NUMBER() OVER (PARTITION BY rh.r_name ORDER BY COALESCE(co.total_spent, 0) DESC) AS rank_customer
FROM RegionHierarchy rh
LEFT JOIN SupplierProduct sp ON rh.r_regionkey = (SELECT n.n_regionkey FROM nation n JOIN supplier s ON n.n_nationkey = s.s_nationkey WHERE s.s_suppkey = sp.s_suppkey LIMIT 1)
LEFT JOIN CustomerOrders co ON rh.r_regionkey = (SELECT n.n_regionkey FROM nation n JOIN customer c ON n.n_nationkey = c.c_nationkey WHERE c.c_custkey = co.c_custkey LIMIT 1)
ORDER BY region_name, rank_supplier, rank_customer;