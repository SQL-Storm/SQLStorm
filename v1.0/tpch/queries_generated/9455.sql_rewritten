WITH SupplierAnalysis AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost,
        COUNT(DISTINCT ps.ps_partkey) AS num_part_supplied
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name
),
CustomerOrderAnalysis AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COUNT(DISTINCT o.o_orderkey) AS total_orders,
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        o.o_orderdate BETWEEN '1997-01-01' AND '1997-12-31'
    GROUP BY 
        c.c_custkey, c.c_name
),
TopSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name
    FROM 
        SupplierAnalysis s
    WHERE 
        s.total_supply_cost > (
            SELECT AVG(total_supply_cost) FROM SupplierAnalysis
        )
),
TopCustomers AS (
    SELECT 
        c.c_custkey,
        c.c_name
    FROM 
        CustomerOrderAnalysis c
    WHERE 
        c.total_spent > (
            SELECT AVG(total_spent) FROM CustomerOrderAnalysis
        )
)
SELECT 
    ts.s_suppkey,
    ts.s_name,
    tc.c_custkey,
    tc.c_name,
    tc.total_orders,
    tc.total_spent
FROM 
    TopSuppliers ts
JOIN 
    lineitem li ON ts.s_suppkey = li.l_suppkey
JOIN 
    orders o ON li.l_orderkey = o.o_orderkey
JOIN 
    TopCustomers tc ON o.o_custkey = tc.c_custkey
WHERE 
    li.l_shipdate BETWEEN '1997-01-01' AND '1997-12-31'
ORDER BY 
    ts.s_suppkey, tc.c_custkey;