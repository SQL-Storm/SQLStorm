
WITH HighValueOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_totalprice,
        o.o_orderdate,
        ROW_NUMBER() OVER (PARTITION BY o.o_orderstatus ORDER BY o.o_totalprice DESC) AS price_rank
    FROM 
        orders o
    WHERE 
        o.o_orderdate >= DATE '1997-01-01'
),
SupplierParts AS (
    SELECT 
        ps.ps_partkey,
        ps.ps_suppkey,
        SUM(ps.ps_availqty) AS total_avail_qty
    FROM 
        partsupp ps
    JOIN 
        supplier s ON ps.ps_suppkey = s.s_suppkey
    GROUP BY 
        ps.ps_partkey, ps.ps_suppkey
    HAVING 
        SUM(ps.ps_availqty) > 100
),
OrderDetails AS (
    SELECT 
        li.l_orderkey,
        p.p_name,
        li.l_quantity,
        li.l_discount,
        li.l_extendedprice * (1 - li.l_discount) AS net_price
    FROM 
        lineitem li
    JOIN 
        part p ON li.l_partkey = p.p_partkey
)
SELECT 
    n.n_name AS supplier_nation,
    AVG(odo.net_price) AS avg_order_value,
    SUM(sp.total_avail_qty) AS total_avail_quantity,
    COUNT(DISTINCT hvo.o_orderkey) AS high_value_order_count
FROM 
    HighValueOrders hvo
LEFT JOIN 
    OrderDetails odo ON hvo.o_orderkey = odo.l_orderkey
LEFT JOIN 
    SupplierParts sp ON sp.ps_partkey = odo.l_partkey
JOIN 
    supplier s ON sp.ps_suppkey = s.s_suppkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
WHERE 
    hvo.price_rank <= 10
GROUP BY 
    n.n_name
HAVING 
    SUM(sp.total_avail_qty) IS NOT NULL
ORDER BY 
    avg_order_value DESC;
