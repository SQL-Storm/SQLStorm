WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        s.s_nationkey, 
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name, s.s_nationkey
), 
TopSuppliers AS (
    SELECT 
        rs.s_suppkey, 
        rs.s_name, 
        n.n_name AS nation_name, 
        rs.total_supply_cost,
        RANK() OVER (PARTITION BY rs.n_nationkey ORDER BY rs.total_supply_cost DESC) AS rnk
    FROM 
        RankedSuppliers rs
    JOIN 
        nation n ON rs.s_nationkey = n.n_nationkey
)
SELECT 
    c.c_name, 
    c.c_acctbal,
    ts.s_name AS supplier_name,
    SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
    SUM(CASE WHEN l.l_returnflag = 'R' THEN 1 ELSE 0 END) AS total_returns,
    COUNT(DISTINCT o.o_orderkey) AS total_orders
FROM 
    customer c
JOIN 
    orders o ON c.c_custkey = o.o_custkey
JOIN 
    lineitem l ON o.o_orderkey = l.l_orderkey
JOIN 
    TopSuppliers ts ON ts.total_supply_cost > 1000 AND c.c_nationkey = ts.n_nationkey
WHERE 
    o.o_orderdate >= DATE '1997-01-01' AND o.o_orderdate < DATE '1997-12-31'
GROUP BY 
    c.c_name, c.c_acctbal, ts.s_name
HAVING 
    ts.rnk <= 5
ORDER BY 
    total_revenue DESC, c.c_name;