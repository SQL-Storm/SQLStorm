
WITH supplier_info AS (
    SELECT 
        s.s_suppkey,
        TRIM(UPPER(s.s_name)) AS normalized_name,
        s.s_address,
        r.r_name AS region_name,
        CONCAT(LEFT(s.s_comment, 50), '...') AS brief_comment
    FROM 
        supplier s
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
),
ordered_parts AS (
    SELECT 
        o.o_orderkey,
        l.l_partkey,
        SUM(l.l_quantity) AS total_quantity,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM 
        orders o
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY 
        o.o_orderkey, l.l_partkey
),
top_region_suppliers AS (
    SELECT 
        si.normalized_name,
        si.region_name,
        COALESCE(SUM(op.total_revenue), 0) AS region_revenue
    FROM 
        supplier_info si
    LEFT JOIN 
        ordered_parts op ON op.l_partkey IN (
            SELECT ps.ps_partkey 
            FROM partsupp ps 
            WHERE ps.ps_suppkey = si.s_suppkey
        )
    GROUP BY 
        si.normalized_name, si.region_name
    ORDER BY 
        region_revenue DESC
)
SELECT 
    si.normalized_name,
    si.region_name,
    si.region_revenue,
    ROW_NUMBER() OVER (PARTITION BY si.region_name ORDER BY si.region_revenue DESC) AS rank
FROM 
    top_region_suppliers si
WHERE 
    region_revenue > 0
FETCH FIRST 10 ROWS ONLY;
