
SELECT 
    CONCAT('Supplier: ', s.s_name, ', Part: ', p.p_name, ', Region: ', r.r_name) AS description,
    SUM(ps.ps_availqty) AS total_available_quantity,
    AVG(ps.ps_supplycost) AS average_supply_cost,
    COUNT(DISTINCT c.c_custkey) AS unique_customers
FROM 
    supplier s
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
JOIN 
    customer c ON c.c_nationkey = n.n_nationkey
WHERE 
    p.p_size > 10 AND s.s_acctbal > 1000.00
GROUP BY 
    s.s_name, p.p_name, r.r_name
HAVING 
    SUM(ps.ps_availqty) > 500
ORDER BY 
    AVG(ps.ps_supplycost) DESC, COUNT(DISTINCT c.c_custkey) DESC;
