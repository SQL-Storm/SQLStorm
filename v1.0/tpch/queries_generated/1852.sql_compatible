
WITH CustomerOrders AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COUNT(o.o_orderkey) AS order_count,
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
),
SupplierParts AS (
    SELECT 
        s.s_suppkey,
        SUM(ps.ps_availqty) AS total_available,
        AVG(ps.ps_supplycost) AS avg_cost
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey
),
RevenueByNation AS (
    SELECT 
        n.n_nationkey,
        n.n_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM 
        nation n
    JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        lineitem l ON ps.ps_partkey = l.l_partkey
    GROUP BY 
        n.n_nationkey, n.n_name
),
HighlyValuedCustomers AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COALESCE(co.order_count, 0) AS order_count,
        COALESCE(co.total_spent, 0) AS total_spent
    FROM 
        customer c
    LEFT JOIN 
        CustomerOrders co ON c.c_custkey = co.c_custkey
    WHERE 
        COALESCE(co.total_spent, 0) > (SELECT AVG(total_spent) FROM CustomerOrders)
),
TopSuppliers AS (
    SELECT 
        sp.s_suppkey,
        SUM(sp.total_available) AS total_avail
    FROM 
        SupplierParts sp
    GROUP BY 
        sp.s_suppkey
    HAVING 
        SUM(sp.total_available) > 1000  
)
SELECT 
    hvc.c_name AS customer_name,
    hvc.total_spent AS customer_total_spent,
    tn.n_name AS nation_name,
    COALESCE(tr.total_revenue, 0) AS nation_revenue,
    ts.total_avail AS supplier_total_available
FROM 
    HighlyValuedCustomers hvc
LEFT JOIN 
    RevenueByNation tr ON hvc.c_custkey = (SELECT c.c_custkey 
                                             FROM customer c 
                                             WHERE c.c_nationkey IN 
                                                   (SELECT n.n_nationkey 
                                                    FROM nation n 
                                                    WHERE n.n_name = 'Germany'))  
LEFT JOIN 
    TopSuppliers ts ON hvc.c_custkey IN (SELECT ps.ps_partkey 
                                           FROM partsupp ps 
                                           WHERE ps.ps_availqty > 0)  
ORDER BY 
    hvc.total_spent DESC, 
    ts.total_avail DESC;
