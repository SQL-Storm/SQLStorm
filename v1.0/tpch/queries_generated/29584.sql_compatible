
WITH PartDetails AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        p.p_brand,
        p.p_size,
        p.p_comment,
        COUNT(DISTINCT ps.ps_suppkey) AS supplier_count,
        SUM(ps.ps_availqty) AS total_available_qty,
        SUM(ps.ps_supplycost) AS total_supply_cost,
        AVG(ps.ps_supplycost) AS avg_supply_cost
    FROM 
        part p
    JOIN 
        partsupp ps ON p.p_partkey = ps.ps_partkey
    GROUP BY 
        p.p_partkey, p.p_name, p.p_brand, p.p_size, p.p_comment
),

SupplierDetails AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_nationkey,
        SUM(l.l_quantity) AS total_supplied_qty,
        SUM(l.l_extendedprice) AS total_sales_value
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        lineitem l ON ps.ps_partkey = l.l_partkey
    GROUP BY 
        s.s_suppkey, s.s_name, s.s_nationkey
),

CommentDetails AS (
    SELECT 
        pd.p_partkey,
        STRING_AGG(DISTINCT s.s_name, ', ') AS supplier_names,
        STRING_AGG(DISTINCT c.c_name, ', ') AS customer_names
    FROM 
        PartDetails pd
    JOIN 
        partsupp ps ON pd.p_partkey = ps.ps_partkey
    JOIN 
        supplier s ON ps.ps_suppkey = s.s_suppkey
    JOIN 
        orders o ON o.o_orderkey IN (SELECT l.l_orderkey FROM lineitem l WHERE l.l_partkey = pd.p_partkey)
    JOIN 
        customer c ON o.o_custkey = c.c_custkey
    GROUP BY 
        pd.p_partkey
)

SELECT 
    pd.p_partkey,
    pd.p_name,
    pd.p_brand,
    pd.p_size,
    pd.supplier_count,
    pd.total_available_qty,
    pd.total_supply_cost,
    pd.avg_supply_cost,
    cd.supplier_names,
    cd.customer_names
FROM 
    PartDetails pd
JOIN 
    CommentDetails cd ON pd.p_partkey = cd.p_partkey
ORDER BY 
    pd.total_supply_cost DESC;
