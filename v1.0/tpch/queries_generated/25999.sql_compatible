
SELECT 
    CONCAT(s.s_name, ' - ', p.p_name) AS SupplierPartName,
    COUNT(DISTINCT o.o_orderkey) AS OrderCount,
    SUM(l.l_quantity) AS TotalQuantity,
    SUM(l.l_extendedprice * (1 - l.l_discount)) AS TotalRevenue,
    MAX(p.p_retailprice) AS HighestRetailPrice,
    SUBSTRING(n.n_name, 1, 3) AS NationAbbreviation,
    LENGTH(p.p_comment) AS CommentLength
FROM 
    supplier s
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
JOIN 
    customer c ON o.o_custkey = c.c_custkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
WHERE 
    p.p_type LIKE '%heavy%'
    AND o.o_orderdate BETWEEN DATE '1997-01-01' AND DATE '1997-12-31'
GROUP BY 
    s.s_name, p.p_name, n.n_name
HAVING 
    TotalQuantity > 100
ORDER BY 
    TotalRevenue DESC, CommentLength ASC
LIMIT 50;
