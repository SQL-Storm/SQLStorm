
WITH SupplierDetails AS (
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, SUM(ps.ps_supplycost * ps.ps_availqty) AS TotalCost
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY s.s_suppkey, s.s_name, s.s_nationkey
),
CustomerOrders AS (
    SELECT c.c_custkey, c.c_name, c.c_acctbal, COUNT(DISTINCT o.o_orderkey) AS OrderCount
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey 
    WHERE o.o_orderstatus = 'O'
    GROUP BY c.c_custkey, c.c_name, c.c_acctbal
),
SalesData AS (
    SELECT l.l_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS TotalSales
    FROM lineitem l
    WHERE l.l_shipdate >= '1998-01-01' AND l.l_shipdate < '1998-12-31'
    GROUP BY l.l_orderkey
)
SELECT 
    r.r_name AS RegionName,
    n.n_name AS NationName,
    COUNT(DISTINCT sc.s_suppkey) AS SupplierCount,
    COUNT(DISTINCT co.c_custkey) AS CustomerCount,
    SUM(sd.TotalSales) AS TotalYearlySales,
    SUM(SUM(sd.TotalSales) * 0.1) AS EstimatedTaxRevenue
FROM region r
JOIN nation n ON r.r_regionkey = n.n_regionkey
JOIN SupplierDetails sc ON n.n_nationkey = sc.s_nationkey
JOIN CustomerOrders co ON n.n_nationkey = co.c_custkey 
JOIN SalesData sd ON co.OrderCount > 0
GROUP BY r.r_name, n.n_name
ORDER BY RegionName, NationName;
