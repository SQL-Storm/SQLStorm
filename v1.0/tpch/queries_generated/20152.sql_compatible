
WITH RegionalSummary AS (
    SELECT 
        n.n_name AS nation_name,
        r.r_name AS region_name,
        SUM(s.s_acctbal) AS total_supplier_balance,
        COUNT(DISTINCT s.s_suppkey) AS supplier_count
    FROM 
        nation n
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
    JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY 
        n.n_name, r.r_name
),
PartSupplierPricing AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        MIN(ps.ps_supplycost) AS min_supply_cost,
        MAX(ps.ps_supplycost) AS max_supply_cost
    FROM 
        part p
    JOIN 
        partsupp ps ON p.p_partkey = ps.ps_partkey
    GROUP BY 
        p.p_partkey, p.p_name
),
OrderStatistics AS (
    SELECT 
        o.o_orderkey,
        o.o_totalprice,
        ROW_NUMBER() OVER (PARTITION BY o.o_orderstatus ORDER BY o.o_totalprice DESC) AS order_rank
    FROM 
        orders o
    WHERE 
        o.o_orderdate BETWEEN '1996-01-01' AND '1996-12-31'
        AND o.o_totalprice IS NOT NULL
),
LineItemAnalysis AS (
    SELECT 
        l.l_orderkey,
        l.l_partkey,
        SUM(l.l_quantity) AS total_quantity,
        COUNT(CASE WHEN l.l_returnflag = 'R' THEN 1 END) AS return_count
    FROM 
        lineitem l
    GROUP BY 
        l.l_orderkey, l.l_partkey
)
SELECT 
    rs.nation_name,
    rs.region_name,
    ps.p_name,
    ps.min_supply_cost,
    ps.max_supply_cost,
    os.order_rank,
    la.total_quantity,
    la.return_count
FROM 
    RegionalSummary rs
LEFT JOIN 
    PartSupplierPricing ps ON rs.supplier_count > 0
LEFT JOIN 
    OrderStatistics os ON os.o_orderkey IN (SELECT l.l_orderkey FROM lineitem l WHERE l.l_partkey = ps.p_partkey)
FULL OUTER JOIN 
    LineItemAnalysis la ON la.l_orderkey = os.o_orderkey
WHERE 
    (ps.min_supply_cost IS NOT NULL AND la.return_count > 0) 
    OR 
    (ps.max_supply_cost IS NULL AND rs.total_supplier_balance > 0)
ORDER BY 
    rs.nation_name, rs.region_name, ps.p_name, os.order_rank DESC;
