SELECT 
    CONCAT('Part: ', p.p_name, ' | Brand: ', p.p_brand, ' | Manufacturer: ', p.p_mfgr) AS part_details,
    SUBSTRING_INDEX(GROUP_CONCAT(DISTINCT CONCAT('Supplier: ', s.s_name, ' (', s.s_phone, ')') ORDER BY s.s_name SEPARATOR '; '), '; ', 3) AS top_suppliers,
    COUNT(DISTINCT o.o_orderkey) AS total_orders,
    SUM(l.l_quantity) AS total_quantity_sold,
    SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
    MAX(cast('1998-10-01 12:34:56' as timestamp) - l.l_shipdate) AS days_since_shipped
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
WHERE 
    p.p_type LIKE '%steel%'
    AND l.l_shipmode IN ('AIR', 'TRUCK')
    AND o.o_orderdate >= DATE_SUB(cast('1998-10-01 12:34:56' as timestamp), INTERVAL 1 YEAR)
GROUP BY 
    p.p_partkey
ORDER BY 
    total_revenue DESC
LIMIT 10;