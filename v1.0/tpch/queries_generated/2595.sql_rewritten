WITH SupplierStats AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        COUNT(DISTINCT ps.ps_partkey) AS part_count,
        SUM(ps.ps_supplycost) AS total_supplycost,
        AVG(ps.ps_availqty) AS avg_availqty
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name, s.s_acctbal
),
OnTimeShipments AS (
    SELECT 
        l.l_orderkey,
        COUNT(*) AS on_time_count
    FROM 
        lineitem l
    WHERE 
        l.l_shipdate <= l.l_commitdate
    GROUP BY 
        l.l_orderkey
),
CustomerOrders AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COUNT(o.o_orderkey) AS order_count,
        SUM(o.o_totalprice) AS total_spent,
        MAX(o.o_orderdate) AS last_order_date
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
)
SELECT
    cs.c_name,
    cs.order_count,
    COALESCE(cs.total_spent, 0) AS total_spent,
    COALESCE(ss.part_count, 0) AS supplier_part_count,
    COALESCE(ss.total_supplycost, 0) AS supplier_total_cost,
    COALESCE(ss.avg_availqty, 0) AS supplier_avg_availqty,
    COALESCE(ots.on_time_count, 0) AS on_time_shipments
FROM 
    CustomerOrders cs
LEFT JOIN 
    SupplierStats ss ON ss.s_acctbal > 1000
LEFT JOIN 
    OnTimeShipments ots ON cs.order_count > 5
WHERE 
    cs.last_order_date > '1997-01-01' 
    OR cs.order_count IS NOT NULL
ORDER BY 
    cs.order_count DESC, cs.total_spent DESC;