
WITH RankedOrders AS (
    SELECT 
        o.o_orderkey, 
        c.c_name, 
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
        ROW_NUMBER() OVER (PARTITION BY c.c_nationkey ORDER BY SUM(l.l_extendedprice * (1 - l.l_discount)) DESC) AS rank
    FROM 
        orders o
    JOIN 
        customer c ON o.o_custkey = c.c_custkey
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY 
        o.o_orderkey, c.c_name, c.c_nationkey
),
TopNationRevenue AS (
    SELECT 
        n.n_name, 
        SUM(ro.total_revenue) AS revenue
    FROM 
        RankedOrders ro
    JOIN 
        nation n ON ro.rank <= 5 AND n.n_nationkey = ro.c_c_nationkey
    GROUP BY 
        n.n_name
)
SELECT 
    r.r_name AS region_name, 
    SUM(t.revenue) AS total_revenue
FROM 
    region r
JOIN 
    nation n ON r.r_regionkey = n.n_regionkey
JOIN 
    TopNationRevenue t ON n.n_name = t.n_name
GROUP BY 
    r.r_name
ORDER BY 
    total_revenue DESC;
