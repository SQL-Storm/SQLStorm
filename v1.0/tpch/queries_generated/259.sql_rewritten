WITH SupplierCost AS (
    SELECT ps.partkey, SUM(ps.ps_supplycost * ps.ps_availqty) AS total_cost
    FROM partsupp ps
    GROUP BY ps.partkey
),
TopSuppliers AS (
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, sc.total_cost
    FROM supplier s
    JOIN SupplierCost sc ON s.s_suppkey = sc.partkey
    ORDER BY sc.total_cost DESC
    LIMIT 5
),
FullOrderDetails AS (
    SELECT o.o_orderkey, o.o_orderdate, c.c_custkey, c.c_name,
           SUM(li.l_extendedprice * (1 - li.l_discount)) AS total_revenue,
           ROW_NUMBER() OVER (PARTITION BY o.o_orderkey ORDER BY SUM(li.l_extendedprice * (1 - li.l_discount)) DESC) AS rn
    FROM orders o
    JOIN customer c ON o.o_custkey = c.c_custkey
    JOIN lineitem li ON o.o_orderkey = li.l_orderkey
    GROUP BY o.o_orderkey, o.o_orderdate, c.c_custkey, c.c_name
),
NationCount AS (
    SELECT n.n_nationkey, n.n_name, COUNT(DISTINCT s.s_suppkey) AS supplier_count
    FROM nation n
    LEFT JOIN supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY n.n_nationkey, n.n_name
)

SELECT fn.n_name AS nation,
       COALESCE(sc.total_cost, 0) AS avg_supply_cost,
       COUNT(DISTINCT fc.o_orderkey) AS total_orders,
       SUM(CASE WHEN fc.rn = 1 THEN fc.total_revenue ELSE 0 END) AS highest_order_revenue
FROM NationCount fn
LEFT JOIN TopSuppliers sc ON fn.n_nationkey = sc.s_nationkey
LEFT JOIN FullOrderDetails fc ON fc.o_orderkey IN (
    SELECT o.o_orderkey
    FROM orders o
    WHERE o.o_orderdate >= '1997-01-01' AND o.o_orderdate <= '1997-12-31'
)
GROUP BY fn.n_name, sc.total_cost
HAVING COUNT(DISTINCT fc.o_orderkey) > 10
ORDER BY highest_order_revenue DESC;