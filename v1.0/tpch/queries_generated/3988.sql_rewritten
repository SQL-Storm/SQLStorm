WITH RankedOrders AS (
    SELECT 
        o.o_orderkey, 
        o.o_orderdate, 
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
        ROW_NUMBER() OVER (PARTITION BY o.o_orderkey ORDER BY o.o_orderdate DESC) AS order_rank
    FROM 
        orders o
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderdate >= DATE '1997-01-01' 
        AND o.o_orderdate < DATE '1998-01-01'
    GROUP BY 
        o.o_orderkey, o.o_orderdate
),
CustomerRevenue AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COALESCE(SUM(ro.total_revenue), 0) AS customer_revenue
    FROM 
        customer c
    LEFT JOIN 
        RankedOrders ro ON c.c_custkey = ro.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
),
TopCustomers AS (
    SELECT 
        cr.c_custkey, 
        cr.c_name, 
        cr.customer_revenue,
        RANK() OVER (ORDER BY cr.customer_revenue DESC) AS revenue_rank
    FROM 
        CustomerRevenue cr
)
SELECT 
    tc.c_custkey,
    tc.c_name,
    tc.customer_revenue,
    n.n_name AS nation
FROM 
    TopCustomers tc
LEFT JOIN 
    customer c ON tc.c_custkey = c.c_custkey
LEFT JOIN 
    nation n ON c.c_nationkey = n.n_nationkey
WHERE 
    tc.revenue_rank <= 10 
    AND n.n_name IS NOT NULL
ORDER BY 
    customer_revenue DESC;