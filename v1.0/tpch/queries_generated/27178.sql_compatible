
SELECT 
    p.p_name AS part_name,
    s.s_name AS supplier_name,
    c.c_name AS customer_name,
    o.o_orderkey AS order_number,
    SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
    RANK() OVER (PARTITION BY p.p_partkey ORDER BY SUM(l.l_extendedprice * (1 - l.l_discount)) DESC) AS revenue_rank,
    COUNT(DISTINCT o.o_orderkey) AS order_count,
    AVG(DATEDIFF(l.l_shipdate, o.o_orderdate)) AS avg_days_to_ship,
    STRING_AGG(DISTINCT s.s_comment, '; ') AS supplier_comments
FROM 
    lineitem l
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
JOIN 
    partsupp ps ON l.l_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    customer c ON o.o_custkey = c.c_custkey
JOIN 
    part p ON l.l_partkey = p.p_partkey
WHERE 
    l.l_shipdate BETWEEN '1997-01-01' AND '1997-12-31'
    AND p.p_name LIKE '%widget%'
GROUP BY 
    p.p_name, s.s_name, c.c_name, o.o_orderkey, p.p_partkey
HAVING 
    total_revenue > 10000
ORDER BY 
    total_revenue DESC;
