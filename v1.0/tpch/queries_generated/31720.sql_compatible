
WITH RECURSIVE SupplierHierarchy AS (
    SELECT s_suppkey, s_name, s_nationkey, s_acctbal, 1 AS level
    FROM supplier
    WHERE s_acctbal > 10000
    UNION ALL
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, s.s_acctbal, sh.level + 1
    FROM supplier s
    JOIN SupplierHierarchy sh ON s.s_nationkey = sh.s_nationkey
    WHERE sh.level < 3
),
OrderStats AS (
    SELECT o.custkey, COUNT(o.o_orderkey) AS total_orders,
           SUM(o.o_totalprice) AS total_spent,
           AVG(o.o_totalprice) AS avg_order_value,
           ROW_NUMBER() OVER (PARTITION BY o.custkey ORDER BY o.o_orderdate DESC) AS rn
    FROM orders o
    GROUP BY o.custkey
),
HighValueCustomers AS (
    SELECT c.c_custkey, c.c_name, os.total_orders, os.total_spent
    FROM customer c
    JOIN OrderStats os ON c.c_custkey = os.custkey
    WHERE os.total_spent > 100000
)
SELECT ph.p_partkey, ph.p_name, ph.p_retailprice, 
       r.r_name AS region_name,
       n.n_name AS nation_name,
       COALESCE(sh.s_name, 'Unknown Supplier') AS supplier_name,
       hvc.c_name AS high_value_customer,
       hvc.total_orders, hvc.total_spent
FROM part ph
LEFT JOIN partsupp ps ON ph.p_partkey = ps.ps_partkey
LEFT JOIN supplier sh ON ps.ps_suppkey = sh.s_suppkey
LEFT JOIN nation n ON sh.s_nationkey = n.n_nationkey
LEFT JOIN region r ON n.n_regionkey = r.r_regionkey
LEFT JOIN HighValueCustomers hvc ON sh.s_nationkey = hvc.c_custkey
WHERE ph.p_retailprice >= 50.00
AND (ph.p_size IN (SELECT DISTINCT p_size FROM part WHERE p_retailprice < 50.00) 
     OR ph.p_comment LIKE '%important%')
ORDER BY ph.p_partkey, hvc.total_spent DESC NULLS LAST;
