
SELECT p.p_name, s.s_name,
       SUBSTRING_INDEX(SUBSTRING_INDEX(s.s_comment, ' ', 10), ' ', -10) AS truncated_comment,
       COUNT(l.l_orderkey) AS total_orders,
       AVG(s.s_acctbal) AS avg_supplier_balance
FROM part p
JOIN partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN lineitem l ON p.p_partkey = l.l_partkey
WHERE p.p_type LIKE '%brass%'
GROUP BY p.p_name, s.s_name, truncated_comment
HAVING COUNT(l.l_orderkey) > 5 AND AVG(s.s_acctbal) < 5000
ORDER BY total_orders DESC, s.s_name ASC;
