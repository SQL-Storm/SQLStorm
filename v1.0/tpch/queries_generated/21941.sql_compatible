
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_nationkey,
        RANK() OVER (PARTITION BY s.s_nationkey ORDER BY s.s_acctbal DESC) AS rank_acctbal,
        SUM(ps.ps_supplycost * ps.ps_availqty) OVER (PARTITION BY s.s_suppkey) AS total_supply_cost
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
),
FilteredCustomers AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        CASE 
            WHEN c.c_acctbal < 0 THEN 'NEGATIVE'
            WHEN c.c_acctbal > 0 AND c.c_acctbal <= 1000 THEN 'LOW_BALANCE'
            ELSE 'HIGH_BALANCE'
        END AS balance_category,
        c.c_nationkey
    FROM 
        customer c
    WHERE 
        c.c_acctbal IS NOT NULL
),
RecentOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_custkey,
        DENSE_RANK() OVER (ORDER BY o.o_orderdate DESC) AS recent_rank
    FROM 
        orders o
    WHERE 
        o.o_orderstatus = 'O'
)

SELECT 
    n.n_name,
    COUNT(DISTINCT rc.c_custkey) AS total_customers,
    COUNT(DISTINCT rs.s_suppkey) AS total_suppliers,
    AVG(rs.total_supply_cost) AS average_supply_cost
FROM 
    region n
LEFT JOIN 
    nation na ON n.r_regionkey = na.n_regionkey
LEFT JOIN 
    FilteredCustomers rc ON na.n_nationkey = rc.c_nationkey
LEFT JOIN 
    RankedSuppliers rs ON na.n_nationkey = rs.s_nationkey
LEFT JOIN 
    RecentOrders ro ON rc.c_custkey = ro.o_custkey
WHERE 
    (rs.rank_acctbal <= 5 OR rs.rank_acctbal IS NULL)
    AND (rc.balance_category = 'HIGH_BALANCE' OR rc.balance_category IS NULL)
GROUP BY 
    n.n_name
HAVING 
    COUNT(DISTINCT rc.c_custkey) > 0
ORDER BY 
    total_suppliers DESC, n.n_name ASC

UNION ALL

SELECT 
    'Total' AS n_name,
    COUNT(DISTINCT c.c_custkey) AS total_customers,
    COUNT(DISTINCT s.s_suppkey) AS total_suppliers,
    AVG(ps.ps_supplycost * ps.ps_availqty) AS average_supply_cost
FROM  
    customer c 
JOIN 
    supplier s ON c.c_nationkey = s.s_nationkey
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
WHERE 
    c.c_acctbal IS NOT NULL
    AND s.s_acctbal IS NOT NULL
