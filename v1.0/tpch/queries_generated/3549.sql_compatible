
WITH SupplierRevenue AS (
    SELECT
        s.s_suppkey,
        s.s_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM
        supplier s
    JOIN
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN
        lineitem l ON ps.ps_partkey = l.l_partkey
    WHERE
        l.l_shipdate >= DATE '1996-01-01'
        AND l.l_shipdate < DATE '1997-01-01'
    GROUP BY
        s.s_suppkey, s.s_name
),
TopSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        sr.total_revenue
    FROM 
        supplier s
    JOIN 
        SupplierRevenue sr ON s.s_suppkey = sr.s_suppkey
    WHERE
        sr.total_revenue = (SELECT MAX(total_revenue) FROM SupplierRevenue)
),
OrderAnalysis AS (
    SELECT
        o.o_orderkey,
        o.o_orderstatus,
        COUNT(DISTINCT l.l_linenumber) AS total_lines,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_order_value
    FROM
        orders o
    LEFT JOIN
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE
        o.o_orderdate >= DATE '1996-01-01' AND o.o_orderdate < DATE '1997-01-01'
    GROUP BY 
        o.o_orderkey, o.o_orderstatus
)
SELECT 
    r.r_name AS region_name,
    t.s_name AS top_supplier,
    o.o_orderkey,
    o.total_lines,
    o.total_order_value
FROM 
    region r
LEFT JOIN 
    nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN 
    customer c ON n.n_nationkey = c.c_nationkey
LEFT JOIN 
    orders o ON c.c_custkey = o.o_custkey
LEFT JOIN 
    TopSuppliers t ON o.o_orderstatus = 'F'
WHERE 
    o.o_orderstatus IS NOT NULL OR t.total_revenue IS NOT NULL
ORDER BY 
    r.r_name, o.total_order_value DESC;
