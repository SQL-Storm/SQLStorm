
WITH SupplierProducts AS (
    SELECT 
        s.s_name,
        p.p_name,
        p.p_type,
        ps.ps_availqty,
        ps.ps_supplycost,
        CONCAT(s.s_name, ' supplies ', p.p_name, ' of type ', p.p_type, ' with availability ', CAST(ps.ps_availqty AS VARCHAR) AS ExtendedInfo
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
), RankedSuppliers AS (
    SELECT 
        s.s_name,
        p.p_name,
        p.p_type,
        ps.ps_availqty,
        ps.ps_supplycost,
        CONCAT(s.s_name, ' supplies ', p.p_name, ' of type ', p.p_type, ' with availability ', CAST(ps.ps_availqty AS VARCHAR), ' units at a cost of ', FORMAT(ps.ps_supplycost, 'C', 'en-US')) AS ExtendedInfo,
        RANK() OVER (PARTITION BY p.p_type ORDER BY ps.ps_supplycost DESC) AS CostRank
    FROM 
        SupplierProducts s
)
SELECT 
    r.r_name,
    COUNT(DISTINCT s.s_name) AS SupplierCount,
    STRING_AGG(ExtendedInfo, '; ') AS SupplierDetails
FROM 
    RankedSuppliers s
JOIN 
    supplier su ON s.s_name = su.s_name
JOIN 
    nation n ON su.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
WHERE 
    CostRank <= 3
GROUP BY 
    r.r_name
ORDER BY 
    r.r_name;
