
SELECT 
    p.p_name,
    s.s_name,
    SUM(l.l_quantity) AS total_quantity,
    COUNT(DISTINCT o.o_orderkey) AS order_count,
    STRING_AGG(DISTINCT c.c_name, '; ') AS customer_names,
    r.r_name AS region_name,
    p.p_type,
    CONCAT('Total Price: ', FORMAT(SUM(l.l_extendedprice * (1 - l.l_discount)), 'C', 'en-US')) AS total_price,
    LEFT(p.p_comment, 20) AS short_comment
FROM 
    part p
JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
JOIN 
    customer c ON o.o_custkey = c.c_custkey
JOIN 
    supplier s ON l.l_suppkey = s.s_suppkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
WHERE 
    p.p_size BETWEEN 10 AND 100
    AND o.o_orderdate >= CURRENT_DATE - INTERVAL '1 year'
GROUP BY 
    p.p_name, s.s_name, r.r_name, p.p_type, p.p_comment
HAVING 
    SUM(l.l_quantity) > 100
ORDER BY 
    total_quantity DESC, p.p_name;
