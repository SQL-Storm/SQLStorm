
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        ROW_NUMBER() OVER (PARTITION BY n.n_name ORDER BY s.s_acctbal DESC) AS supplier_rank
    FROM 
        supplier s
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
    WHERE 
        n.n_name IN (SELECT DISTINCT n_name FROM nation WHERE n_comment IS NOT NULL)
),
AggregateLineItems AS (
    SELECT 
        l.l_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue,
        COUNT(*) AS total_items,
        MAX(l.l_shipdate) AS latest_shipdate
    FROM 
        lineitem l
    GROUP BY 
        l.l_orderkey
),
FilteredOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_totalprice,
        o.o_orderstatus,
        COUNT(DISTINCT l.l_linenumber) AS lineitem_count
    FROM 
        orders o
    LEFT JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderstatus = 'F' 
        AND EXISTS (
            SELECT 1 
            FROM AggregateLineItems ali 
            WHERE ali.l_orderkey = o.o_orderkey 
              AND ali.total_revenue > 1000
        )
    GROUP BY 
        o.o_orderkey, o.o_totalprice, o.o_orderstatus
)
SELECT 
    r.r_name,
    COUNT(DISTINCT fs.o_orderkey) AS unique_orders,
    SUM(ali.total_revenue) AS total_revenue,
    AVG(fs.o_totalprice) AS average_order_value,
    STRING_AGG(DISTINCT CONCAT(s.s_name, ' (', s.s_acctbal, ')'), '; ') AS top_suppliers
FROM 
    region r
LEFT JOIN 
    nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN 
    supplier s ON n.n_nationkey = s.n_nationkey
LEFT JOIN 
    RankedSuppliers rs ON s.s_suppkey = rs.s_suppkey
LEFT JOIN 
    FilteredOrders fs ON fs.o_orderkey IN (
        SELECT l.l_orderkey
        FROM lineitem l
        WHERE l.l_partkey IN (
            SELECT p.p_partkey
            FROM part p
            WHERE p.p_size IS NULL OR p.p_size >= 5
        )
    )
LEFT JOIN 
    AggregateLineItems ali ON fs.o_orderkey = ali.l_orderkey
WHERE 
    rs.supplier_rank = 1
GROUP BY 
    r.r_name
ORDER BY 
    total_revenue DESC NULLS LAST;
