WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        n.n_name AS nation_name,
        p.p_name AS part_name,
        ps.ps_availqty,
        ps.ps_supplycost,
        ROW_NUMBER() OVER (PARTITION BY p.p_partkey ORDER BY ps.ps_supplycost ASC) AS rank
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
    WHERE 
        ps.ps_supplycost < 100.00
),
CustomerOrders AS (
    SELECT 
        c.c_custkey,
        o.o_orderkey,
        o.o_totalprice,
        o.o_orderdate,
        o.o_orderstatus,
        o.o_orderpriority
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        o.o_orderdate BETWEEN '1997-01-01' AND '1997-12-31'
    AND 
        o.o_orderstatus = 'O' 
),
OrderDetails AS (
    SELECT 
        co.o_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM 
        CustomerOrders co
    JOIN 
        lineitem l ON co.o_orderkey = l.l_orderkey
    GROUP BY 
        co.o_orderkey
)
SELECT 
    rs.nation_name, 
    rs.part_name, 
    SUM(od.total_revenue) AS total_revenue,
    COUNT(DISTINCT co.c_custkey) AS unique_customers,
    COUNT(DISTINCT rs.s_suppkey) AS total_suppliers
FROM 
    RankedSuppliers rs
JOIN 
    OrderDetails od ON rs.p_partkey = (SELECT p.p_partkey FROM part p WHERE p.p_name = rs.part_name)
JOIN 
    CustomerOrders co ON co.o_orderkey IN (SELECT l.l_orderkey FROM lineitem l WHERE l.l_partkey = rs.p_partkey)
WHERE 
    rs.rank = 1
GROUP BY 
    rs.nation_name, 
    rs.part_name
ORDER BY 
    total_revenue DESC, 
    unique_customers DESC;