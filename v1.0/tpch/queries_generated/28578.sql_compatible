
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_nationkey,
        s.s_acctbal,
        ROW_NUMBER() OVER (PARTITION BY s.s_nationkey ORDER BY s.s_acctbal DESC) AS rank
    FROM supplier s
),
FilteredParts AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        p.p_brand,
        p.p_retailprice,
        p.p_comment,
        SUBSTRING(p.p_comment, 1, 15) AS short_comment
    FROM part p
    WHERE p.p_retailprice > 100.00
),
SupplierPartDetails AS (
    SELECT 
        ps.ps_partkey,
        s.s_name,
        p.p_name,
        s.s_acctbal,
        ps.ps_availqty,
        ps.ps_supplycost,
        p.p_type,
        (p.p_retailprice * ps.ps_availqty) AS total_stock_value
    FROM partsupp ps
    JOIN RankedSuppliers s ON ps.ps_suppkey = s.s_suppkey
    JOIN FilteredParts p ON ps.ps_partkey = p.p_partkey
    WHERE s.rank <= 3
)
SELECT 
    spd.p_name,
    spd.s_name,
    spd.s_acctbal,
    spd.ps_availqty,
    spd.total_stock_value,
    COUNT(DISTINCT o.o_orderkey) AS order_count
FROM SupplierPartDetails spd
LEFT JOIN lineitem l ON spd.ps_partkey = l.l_partkey
LEFT JOIN orders o ON l.l_orderkey = o.o_orderkey
WHERE o.o_orderstatus = 'O'
GROUP BY spd.p_name, spd.s_name, spd.s_acctbal, spd.ps_availqty, spd.total_stock_value
ORDER BY total_stock_value DESC
LIMIT 10;
