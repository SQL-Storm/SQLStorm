
WITH part_supplier_info AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        s.s_suppkey,
        s.s_name,
        ps.ps_supplycost,
        ps.ps_availqty,
        CONCAT(s.s_name, ' supplies ', p.p_name) AS supply_info
    FROM 
        part p
    JOIN 
        partsupp ps ON p.p_partkey = ps.ps_partkey
    JOIN 
        supplier s ON s.s_suppkey = ps.ps_suppkey
),
nation_region_info AS (
    SELECT 
        n.n_name AS nation_name,
        r.r_name AS region_name,
        COUNT(s.s_suppkey) AS total_suppliers
    FROM 
        nation n
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
    JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY 
        n.n_name, r.r_name
),
customer_order_summary AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COUNT(o.o_orderkey) AS total_orders,
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
)
SELECT 
    si.p_name,
    si.supply_info,
    n.nation_name,
    n.region_name,
    cs.c_name,
    cs.total_orders,
    cs.total_spent
FROM 
    part_supplier_info si
JOIN 
    nation_region_info n ON si.s_suppkey IN (SELECT ps.ps_suppkey FROM partsupp ps WHERE ps.ps_partkey = si.p_partkey)
JOIN 
    customer_order_summary cs ON cs.total_orders > 0
WHERE 
    si.ps_supplycost < (SELECT AVG(ps.ps_supplycost) FROM partsupp ps)
ORDER BY 
    cs.total_spent DESC, n.total_suppliers DESC;
