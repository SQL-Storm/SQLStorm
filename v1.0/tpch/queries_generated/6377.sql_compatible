
WITH ranked_parts AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        p.p_brand,
        p.p_type,
        p.p_size,
        ps.ps_availqty,
        ps.ps_supplycost,
        ROW_NUMBER() OVER (PARTITION BY p.p_brand, p.p_type ORDER BY ps.ps_supplycost ASC) AS rank
    FROM 
        part AS p
    JOIN 
        partsupp AS ps ON p.p_partkey = ps.ps_partkey
    WHERE 
        p.p_size >= 10
),
customer_orders AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        o.o_orderkey,
        o.o_orderdate,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_spent
    FROM 
        customer AS c
    JOIN 
        orders AS o ON c.c_custkey = o.o_custkey
    JOIN 
        lineitem AS l ON o.o_orderkey = l.l_orderkey
    GROUP BY 
        c.c_custkey, c.c_name, o.o_orderkey, o.o_orderdate
),
supplier_regions AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        n.n_name AS nation,
        r.r_name AS region
    FROM 
        supplier AS s
    JOIN 
        nation AS n ON s.s_nationkey = n.n_nationkey
    JOIN 
        region AS r ON n.n_regionkey = r.r_regionkey
)
SELECT 
    cp.c_name AS customer_name,
    cp.total_spent,
    rp.p_name AS part_name,
    sr.nation,
    sr.region,
    sr.s_name AS supplier_name,
    rp.ps_availqty,
    rp.ps_supplycost
FROM 
    customer_orders AS cp
JOIN 
    ranked_parts AS rp ON rp.rank <= 5
JOIN 
    partsupp AS ps ON rp.p_partkey = ps.ps_partkey
JOIN 
    supplier_regions AS sr ON ps.ps_suppkey = sr.s_suppkey
WHERE 
    cp.total_spent > 10000
ORDER BY 
    cp.total_spent DESC, rp.ps_supplycost ASC;
