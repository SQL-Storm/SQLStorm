
WITH ranked_parts AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        p.p_brand,
        ROW_NUMBER() OVER (PARTITION BY p.p_brand ORDER BY p.p_retailprice DESC) AS price_rank
    FROM 
        part p
    WHERE 
        p.p_comment LIKE '%special%'
),
high_value_customers AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        c.c_acctbal > 5000
    GROUP BY 
        c.c_custkey, c.c_name
    HAVING 
        SUM(o.o_totalprice) > 10000
),
supplier_part_details AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        COUNT(ps.ps_partkey) AS total_parts,
        STRING_AGG(DISTINCT p.p_name, ', ') AS part_names
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
    GROUP BY 
        s.s_suppkey, s.s_name
)
SELECT 
    r.r_name AS region_name,
    COUNT(DISTINCT nc.n_nationkey) AS total_nations,
    SUM(hvc.total_spent) AS high_value_expenditure,
    COUNT(rp.p_partkey) AS total_ranked_parts,
    STRING_AGG(DISTINCT spd.part_names, '; ') AS suppliers_parts_info
FROM 
    region r
JOIN 
    nation nc ON r.r_regionkey = nc.n_regionkey
LEFT JOIN 
    high_value_customers hvc ON hvc.c_custkey IN (SELECT c.c_custkey FROM customer c WHERE c.c_nationkey = nc.n_nationkey)
LEFT JOIN 
    ranked_parts rp ON rp.p_partkey IN (SELECT ps.ps_partkey FROM partsupp ps JOIN supplier s ON ps.ps_suppkey = s.s_suppkey WHERE s.s_nationkey = nc.n_nationkey)
LEFT JOIN 
    supplier_part_details spd ON spd.s_suppkey IN (SELECT s.s_suppkey FROM supplier s WHERE s.s_nationkey = nc.n_nationkey)
GROUP BY 
    r.r_name
ORDER BY 
    total_nations DESC;
