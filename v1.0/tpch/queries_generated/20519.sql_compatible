
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        ROW_NUMBER() OVER (PARTITION BY s.s_nationkey ORDER BY s.s_acctbal DESC) AS rnk
    FROM 
        supplier s
), 
OrderStats AS (
    SELECT 
        o.o_orderkey,
        COUNT(l.l_orderkey) AS total_line_items,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales,
        SUM(l.l_tax) AS total_tax
    FROM 
        orders o
    LEFT JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderdate BETWEEN '1997-01-01' AND '1998-10-01'
    GROUP BY 
        o.o_orderkey
), 
NationSummary AS (
    SELECT 
        n.n_nationkey,
        n.n_name,
        COUNT(DISTINCT c.c_custkey) AS customer_count,
        SUM(c.c_acctbal) AS total_cust_bal
    FROM 
        nation n
    LEFT JOIN 
        customer c ON n.n_nationkey = c.c_nationkey
    GROUP BY 
        n.n_nationkey, n.n_name
)
SELECT 
    p.p_partkey,
    p.p_name,
    p.p_retailprice,
    RANK() OVER (ORDER BY p.p_retailprice DESC) AS price_rank,
    COALESCE(n.n_name, 'Unknown') AS nation_name,
    ns.customer_count,
    ns.total_cust_bal,
    osc.total_line_items,
    osc.total_sales,
    osc.total_tax,
    CASE 
        WHEN osc.total_sales > 10000 THEN 'High Value'
        WHEN osc.total_sales > 5000 THEN 'Medium Value'
        ELSE 'Low Value'
    END AS order_value_category
FROM 
    part p
LEFT JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
LEFT JOIN 
    RankedSuppliers rs ON ps.ps_suppkey = rs.s_suppkey AND rs.rnk = 1
LEFT JOIN 
    orders o ON ps.ps_partkey = ANY(SELECT l.l_partkey FROM lineitem l WHERE l.l_orderkey = o.o_orderkey)
LEFT JOIN 
    OrderStats osc ON o.o_orderkey = osc.o_orderkey
LEFT JOIN 
    nation n ON rs.s_nationkey = n.n_nationkey
LEFT JOIN 
    NationSummary ns ON n.n_nationkey = ns.n_nationkey
WHERE 
    (p.p_size IS NULL OR p.p_size >= (SELECT AVG(p_sub.p_size) FROM part p_sub WHERE p_sub.p_type = p.p_type))
    AND (osc.total_sales IS NULL OR osc.total_sales < (SELECT AVG(total_sales) FROM OrderStats))
GROUP BY
    p.p_partkey,
    p.p_name,
    p.p_retailprice,
    n.n_name,
    ns.customer_count,
    ns.total_cust_bal,
    osc.total_line_items,
    osc.total_sales,
    osc.total_tax,
    order_value_category
ORDER BY 
    p.p_partkey,
    order_value_category DESC;
