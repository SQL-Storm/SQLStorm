
WITH RankedSuppliers AS (
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, SUM(ps.ps_supplycost * ps.ps_availqty) AS total_cost
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY s.s_suppkey, s.s_name, s.s_nationkey
),
FilteredCustomers AS (
    SELECT c.c_custkey, c.c_name, c.c_nationkey, SUM(o.o_totalprice) AS total_spent
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    WHERE o.o_orderdate >= DATE '1997-01-01' AND o.o_orderdate < DATE '1998-01-01'
    GROUP BY c.c_custkey, c.c_name, c.c_nationkey
),
RankedCustomers AS (
    SELECT c.c_custkey, c.c_name, c.c_nationkey, c.total_spent,
           RANK() OVER (ORDER BY c.total_spent DESC) AS customer_rank
    FROM FilteredCustomers c
),
TopSuppliers AS (
    SELECT s.s_suppkey, s.total_cost,
           RANK() OVER (ORDER BY s.total_cost DESC) AS supplier_rank
    FROM RankedSuppliers s
)
SELECT 
    r.n_name AS nation_name,
    COUNT(DISTINCT c.c_custkey) AS number_of_customers,
    COUNT(DISTINCT s.s_suppkey) AS number_of_suppliers,
    SUM(s.total_cost) AS total_supplier_cost,
    SUM(c.total_spent) AS total_customer_spending
FROM RankedCustomers c
JOIN nation r ON c.c_nationkey = r.n_nationkey
JOIN TopSuppliers s ON c.c_nationkey = s.s_nationkey
WHERE c.customer_rank <= 10 AND s.supplier_rank <= 10
GROUP BY r.n_name
ORDER BY number_of_customers DESC, total_supplier_cost DESC;
