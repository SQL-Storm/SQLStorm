
WITH SupplierPartDetails AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        p.p_partkey,
        p.p_name,
        ps.ps_availqty,
        ps.ps_supplycost,
        (ps.ps_availqty * ps.ps_supplycost) AS total_value,
        CASE 
            WHEN p.p_size > 20 THEN 'Large'
            WHEN p.p_size BETWEEN 10 AND 20 THEN 'Medium'
            ELSE 'Small'
        END AS size_category
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
    WHERE 
        s.s_acctbal > (
            SELECT AVG(s_acctbal) FROM supplier WHERE s_comment LIKE '%important%'
        )
),
CustomerOrderDetails AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        o.o_orderkey,
        o.o_orderdate,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_order_value
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY 
        c.c_custkey, c.c_name, o.o_orderkey, o.o_orderdate
),
RegionWiseSummary AS (
    SELECT 
        n.n_name AS nation_name,
        r.r_name AS region_name,
        COUNT(DISTINCT s.s_suppkey) AS total_suppliers,
        SUM(sd.total_value) AS total_value_suppliers
    FROM 
        nation n
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
    LEFT JOIN 
        SupplierPartDetails sd ON n.n_nationkey = sd.s_suppkey
    GROUP BY 
        n.n_name, r.r_name
),
FinalSummary AS (
    SELECT
        cwd.c_custkey,
        cwd.c_name,
        cwd.o_orderkey,
        cwd.o_orderdate,
        rw.region_name,
        rw.nation_name,
        cwd.total_order_value,
        CASE 
            WHEN cwd.total_order_value > (SELECT AVG(total_order_value) FROM CustomerOrderDetails) THEN 'Above Average'
            ELSE 'Below Average'
        END AS order_value_category
    FROM 
        CustomerOrderDetails cwd
    JOIN 
        RegionWiseSummary rw ON cwd.c_custkey = (SELECT c.c_custkey FROM customer c ORDER BY c.c_custkey LIMIT 1) 
)
SELECT 
    f.c_custkey,
    f.c_name,
    f.o_orderkey,
    f.o_orderdate,
    f.region_name,
    f.nation_name,
    f.total_order_value,
    f.order_value_category,
    COUNT(spd.p_partkey) AS supplier_count
FROM 
    FinalSummary f
LEFT JOIN 
    SupplierPartDetails spd ON f.c_custkey = (SELECT c.c_custkey FROM customer c ORDER BY c.c_custkey LIMIT 1) 
GROUP BY 
    f.c_custkey, f.c_name, f.o_orderkey, f.o_orderdate, f.region_name, f.nation_name, f.total_order_value, f.order_value_category
ORDER BY 
    f.total_order_value DESC;
