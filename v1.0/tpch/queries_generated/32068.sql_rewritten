WITH RECURSIVE supplier_cte AS (
    SELECT s_suppkey, s_name, s_acctbal, s_nationkey,
           1 AS level
    FROM supplier
    WHERE s_acctbal > 1000
    UNION ALL
    SELECT s.s_suppkey, s.s_name, s.s_acctbal, s.s_nationkey,
           level + 1
    FROM supplier s
    JOIN supplier_cte sc ON s.s_nationkey = sc.s_nationkey
    WHERE s.s_acctbal > sc.s_acctbal
),
part_availability AS (
    SELECT ps_partkey, SUM(ps_availqty) AS total_avail
    FROM partsupp
    GROUP BY ps_partkey
),
order_stats AS (
    SELECT o.o_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE o.o_orderdate >= DATE '1997-01-01'
      AND o.o_orderdate < DATE '1998-01-01'
    GROUP BY o.o_orderkey
),
supplier_performance AS (
    SELECT s.s_suppkey, s.s_name, SUM(l.l_extendedprice * (1 - l.l_discount)) AS supplier_total
    FROM supplier s
    JOIN lineitem l ON s.s_suppkey = l.l_suppkey
    WHERE l.l_shipdate >= DATE '1997-01-01'
      AND l.l_shipdate < DATE '1998-01-01'
    GROUP BY s.s_suppkey, s.s_name
)
SELECT r.r_name, COUNT(DISTINCT c.c_custkey) AS total_customers,
       SUM(ps.total_avail) AS total_avail_parts,
       SUM(sp.supplier_total) AS total_sales_by_supplier,
       AVG(sl.s_acctbal) AS avg_supplier_acctbal
FROM region r
LEFT JOIN nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN customer c ON n.n_nationkey = c.c_nationkey
LEFT JOIN part_availability ps ON ps.ps_partkey IN (
    SELECT p.p_partkey
    FROM part p
    WHERE p.p_size > 10
)
LEFT JOIN supplier_performance sp ON sp.s_suppkey IN (
    SELECT s_suppkey
    FROM supplier_cte
)
LEFT JOIN supplier s ON c.c_nationkey = s.s_nationkey
GROUP BY r.r_name
HAVING SUM(ps.total_avail) IS NOT NULL AND 
       AVG(sl.s_acctbal) > 500
ORDER BY total_sales_by_supplier DESC, r.r_name ASC
LIMIT 10;