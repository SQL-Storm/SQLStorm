SELECT 
    CONCAT('Supplier: ', s.s_name, ' | Region: ', r.r_name, ' | Order Date: ', DATE_FORMAT(o.o_orderdate, '%Y-%m-%d'), 
           ' | Total Price: $', FORMAT(SUM(l.l_extendedprice * (1 - l.l_discount)), 2)) AS Summary,
    GROUP_CONCAT(DISTINCT p.p_name ORDER BY p.p_name SEPARATOR ', ') AS Parts_Offered,
    SUM(l.l_quantity) AS Total_Quantity_Supplied
FROM 
    supplier s
JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN 
    part p ON ps.ps_partkey = p.p_partkey
JOIN 
    lineitem l ON l.l_partkey = p.p_partkey
JOIN 
    orders o ON o.o_orderkey = l.l_orderkey
JOIN 
    customer c ON c.c_custkey = o.o_custkey
JOIN 
    nation n ON n.n_nationkey = s.s_nationkey
JOIN 
    region r ON r.r_regionkey = n.n_regionkey
WHERE 
    r.r_name LIKE '%EUROPE%' AND 
    o.o_orderdate BETWEEN '1997-01-01' AND '1997-12-31'
GROUP BY 
    s.s_suppkey, r.r_regionkey, o.o_orderdate
ORDER BY 
    o.o_orderdate DESC, Total_Quantity_Supplied DESC;