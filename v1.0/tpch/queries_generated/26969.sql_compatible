
SELECT 
    p.p_name,
    p.p_brand,
    COUNT(DISTINCT ps.s_suppkey) AS supplier_count,
    SUM(ps.ps_availqty) AS total_available_quantity,
    AVG(ps.ps_supplycost) AS average_supply_cost,
    CONCAT('Region: ', r.r_name, ' - Nation: ', n.n_name) AS location,
    CONCAT(SUBSTRING(p.p_comment, 1, 10), '...') AS truncated_comment
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
WHERE 
    p.p_size > 10 
    AND p.p_retailprice BETWEEN 100.00 AND 500.00
GROUP BY 
    p.p_name, p.p_brand, r.r_name, n.n_name, p.p_comment
HAVING 
    COUNT(DISTINCT ps.ps_suppkey) > 5
ORDER BY 
    total_available_quantity DESC, average_supply_cost ASC;
