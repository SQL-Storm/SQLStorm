
WITH RankedCustomers AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        SUM(o.o_totalprice) AS total_spent,
        RANK() OVER (ORDER BY SUM(o.o_totalprice) DESC) AS spend_rank
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
),
SupplierDetails AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        n.n_name AS nation_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
    GROUP BY 
        s.s_suppkey, s.s_name, n.n_name
),
ProductStats AS (
    SELECT 
        p.p_partkey,
        p.p_name,
        AVG(p.p_retailprice) AS avg_price,
        COUNT(DISTINCT ps.ps_suppkey) AS supplier_count,
        SUM(CASE WHEN li.l_shipmode = 'GROUND' THEN 1 ELSE 0 END) AS ground_shipments
    FROM 
        part p
    LEFT JOIN 
        partsupp ps ON p.p_partkey = ps.ps_partkey
    LEFT JOIN 
        lineitem li ON ps.ps_suppkey = li.l_suppkey 
    GROUP BY 
        p.p_partkey, p.p_name
)
SELECT 
    rc.c_name AS customer_name,
    rc.total_spent AS customer_total_spent,
    sd.nation_name AS supplier_nation,
    sd.total_supply_cost AS supplier_total_supply_cost,
    ps.p_name AS product_name,
    ps.avg_price AS product_avg_price,
    ps.supplier_count AS number_of_suppliers,
    ps.ground_shipments AS ground_shipments_count
FROM 
    RankedCustomers rc
JOIN 
    SupplierDetails sd ON sd.total_supply_cost > 100000
JOIN 
    ProductStats ps ON ps.avg_price < 100
WHERE 
    rc.spend_rank <= 10
ORDER BY 
    rc.total_spent DESC, ps.ground_shipments_count DESC;
