WITH RECURSIVE region_sales AS (
    SELECT 
        r.r_name AS region_name, 
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
    FROM 
        region r
    JOIN 
        nation n ON r.r_regionkey = n.n_regionkey
    JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
    JOIN 
        lineitem l ON l.l_partkey = p.p_partkey
    WHERE 
        l.l_shipdate BETWEEN DATE '1995-01-01' AND DATE '1995-12-31'
    GROUP BY 
        r.r_name
),
unique_customers AS (
    SELECT 
        c.c_custkey, 
        COUNT(DISTINCT o.o_orderkey) AS order_count
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        o.o_orderstatus = 'O' 
        AND o.o_orderdate >= DATE '1996-01-01'
    GROUP BY 
        c.c_custkey
),
customer_sales AS (
    SELECT 
        c.c_custkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS cust_sales
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderstatus IN ('O', 'F') 
        AND o.o_orderdate < DATE '1996-06-01'
    GROUP BY 
        c.c_custkey
)
SELECT 
    rs.region_name,
    cs.cust_sales,
    uc.order_count,
    CASE 
        WHEN cs.cust_sales IS NULL THEN 'No Sales'
        ELSE 'Sales Exist'
    END AS sales_status
FROM 
    region_sales rs
LEFT JOIN 
    (SELECT cust_sales, cc.region_name FROM customer_sales cc) cs ON rs.region_name = cs.region_name
LEFT JOIN 
    unique_customers uc ON uc.c_custkey = cs.cust_sales
ORDER BY 
    rs.total_sales DESC, 
    cs.cust_sales DESC NULLS LAST
FETCH FIRST 50 ROWS ONLY 
UNION ALL 
SELECT 
    'UNKNOWN REGION' AS region_name,
    SUM(l.l_extendedprice * (1 - l.l_discount)) AS cust_sales,
    NULL AS order_count,
    'Aggregate' AS sales_status
FROM 
    lineitem l 
WHERE 
    l.l_shipdate < DATE '1992-01-01' 
    AND l.l_returnflag = 'R'
GROUP BY 
    l.l_returnflag
ORDER BY 
    cust_sales DESC
WITH TOTALS;