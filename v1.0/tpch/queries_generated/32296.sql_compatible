
WITH RECURSIVE SupplierHierarchy AS (
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, 1 AS level
    FROM supplier s
    WHERE s.s_acctbal > 1000
    UNION ALL
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, sh.level + 1
    FROM supplier s
    INNER JOIN SupplierHierarchy sh ON s.s_nationkey = sh.s_nationkey
    WHERE s.s_acctbal > sh.level * 1000
),
OrderSummary AS (
    SELECT o.o_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue, o.o_orderdate
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE o.o_orderstatus = 'O' AND l.l_shipdate >= DATE '1998-10-01' - INTERVAL '1 year'
    GROUP BY o.o_orderkey, o.o_orderdate
),
RegionStats AS (
    SELECT r.r_name, COUNT(DISTINCT n.n_nationkey) AS nation_count, SUM(p.p_retailprice) AS total_retail_value
    FROM region r
    JOIN nation n ON r.r_regionkey = n.n_regionkey
    LEFT JOIN supplier s ON n.n_nationkey = s.s_nationkey
    LEFT JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    LEFT JOIN part p ON ps.ps_partkey = p.p_partkey
    GROUP BY r.r_name
)
SELECT 
    rh.s_name AS Supplier_Name,
    rh.level AS Hierarchy_Level,
    os.total_revenue AS Order_Revenue,
    rs.nation_count AS Region_Nations,
    rs.total_retail_value AS Retail_Value
FROM SupplierHierarchy rh
JOIN OrderSummary os ON rh.s_nationkey = (SELECT n.n_nationkey FROM nation n WHERE n.n_nationkey = rh.s_nationkey LIMIT 1)
FULL OUTER JOIN RegionStats rs ON rh.s_nationkey = rs.r_name
WHERE (os.total_revenue > 50000 OR rs.total_retail_value > 200000)
  AND rs.nation_count IS NOT NULL
ORDER BY os.total_revenue DESC, rs.total_retail_value ASC;
