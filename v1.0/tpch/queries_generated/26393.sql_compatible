
SELECT
    CONCAT('Supplier ', s.s_name, ' from ', n.n_name, ' provides ', p.p_name) AS description,
    COUNT(DISTINCT o.o_orderkey) AS order_count,
    SUM(l.l_extendedprice) AS total_revenue,
    AVG(CASE WHEN l.l_discount > 0 THEN l.l_extendedprice * (1 - l.l_discount) ELSE l.l_extendedprice END) AS avg_net_price,
    SUBSTRING(p.p_comment, 1, INSTR(p.p_comment, ' ', 1) + INSTR(SUBSTRING(p.p_comment, INSTR(p.p_comment, ' ', 1) + 1), ' ', 1) + INSTR(SUBSTRING(p.p_comment, INSTR(SUBSTRING(p.p_comment, INSTR(p.p_comment, ' ', 1) + 1), ' ', 1) + 1), ' ', 1)) AS short_comment
FROM
    supplier s
JOIN
    nation n ON s.s_nationkey = n.n_nationkey
JOIN
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
JOIN
    part p ON ps.ps_partkey = p.p_partkey
JOIN
    lineitem l ON p.p_partkey = l.l_partkey
JOIN
    orders o ON l.l_orderkey = o.o_orderkey
WHERE
    s.s_comment LIKE '%discount%'
    AND o.o_orderdate >= '1997-01-01'
    AND o.o_orderstatus = 'O'
GROUP BY
    s.s_name, n.n_name, p.p_name, p.p_comment
HAVING
    COUNT(DISTINCT o.o_orderkey) > 5
ORDER BY
    total_revenue DESC;
