
WITH RECURSIVE SupplierHierarchy AS (
    SELECT s_suppkey, s_nationkey, s_name, s_acctbal, 1 AS level
    FROM supplier
    WHERE s_acctbal > 10000

    UNION ALL

    SELECT s.s_suppkey, s.s_nationkey, s.s_name, s.s_acctbal, sh.level + 1
    FROM supplier s
    INNER JOIN SupplierHierarchy sh ON s.s_nationkey = sh.s_nationkey
    WHERE s.s_acctbal > (sh.level * 1000)
),
OrderSummary AS (
    SELECT o.o_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE l.l_shipdate BETWEEN DATE '1997-01-01' AND DATE '1997-12-31'
    GROUP BY o.o_orderkey
),
NationRevenue AS (
    SELECT n.n_nationkey, SUM(os.total_revenue) AS nation_revenue
    FROM nation n
    LEFT JOIN OrderSummary os ON n.n_nationkey = (
        SELECT c.c_nationkey
        FROM customer c
        JOIN orders o ON c.c_custkey = o.o_custkey
        WHERE o.o_orderkey IN (SELECT o_orderkey FROM OrderSummary)
        LIMIT 1
    )
    GROUP BY n.n_nationkey
)
SELECT r.r_name AS region_name,
       COALESCE(nr.nation_revenue, 0) AS total_revenue_generated,
       COUNT(DISTINCT sh.s_suppkey) OVER (PARTITION BY r.r_name) AS supplier_count
FROM region r
LEFT JOIN nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN NationRevenue nr ON n.n_nationkey = nr.n_nationkey
LEFT JOIN SupplierHierarchy sh ON sh.s_nationkey = n.n_nationkey
WHERE r.r_comment IS NULL
GROUP BY r.r_name, nr.nation_revenue
ORDER BY total_revenue_generated DESC, supplier_count DESC;
