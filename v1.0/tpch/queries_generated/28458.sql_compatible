
WITH RankedParts AS (
    SELECT
        p.p_partkey,
        p.p_name,
        p.p_mfgr,
        p.p_brand,
        p.p_type,
        p.p_size,
        p.p_container,
        ROW_NUMBER() OVER (PARTITION BY p.p_brand ORDER BY p.p_retailprice DESC) AS rnk
    FROM
        part p
    WHERE
        p.p_retailprice > (SELECT AVG(p2.p_retailprice) FROM part p2)
),
SupplierDetails AS (
    SELECT
        s.s_suppkey,
        s.s_name,
        n.n_name AS supplier_nation,
        SUBSTRING(s.s_comment, 1, 20) AS short_comment
    FROM
        supplier s
    JOIN
        nation n ON s.s_nationkey = n.n_nationkey
)
SELECT
    rp.p_name,
    rp.p_brand,
    rp.p_type,
    rp.p_size,
    rp.p_container,
    sd.s_name AS supplier_name,
    sd.supplier_nation,
    sd.short_comment,
    COUNT(DISTINCT o.o_orderkey) AS order_count
FROM
    RankedParts rp
JOIN
    partsupp ps ON rp.p_partkey = ps.ps_partkey
JOIN
    supplier sd ON ps.ps_suppkey = sd.s_suppkey
LEFT JOIN
    lineitem l ON ps.ps_partkey = l.l_partkey
LEFT JOIN
    orders o ON l.l_orderkey = o.o_orderkey
WHERE
    rp.rnk <= 5 AND
    (o.o_orderstatus = 'O' OR o.o_orderstatus IS NULL)
GROUP BY
    rp.p_name, rp.p_brand, rp.p_type, rp.p_size, rp.p_container, sd.s_name, sd.supplier_nation, sd.short_comment
ORDER BY
    rp.p_brand, order_count DESC;
