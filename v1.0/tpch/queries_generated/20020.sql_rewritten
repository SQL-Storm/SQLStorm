WITH RECURSIVE supplier_hierarchy AS (
    SELECT s_suppkey, s_name, s_nationkey, s_acctbal,
           CAST(s_name AS varchar) AS supplier_path,
           1 AS level
    FROM supplier s
    WHERE s_acctbal IS NOT NULL AND s_acctbal > (SELECT AVG(s_acctbal) FROM supplier)
    
    UNION ALL
    
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, s.s_acctbal,
           CAST(CONCAT(sh.supplier_path, ' -> ', s.s_name) AS varchar) AS supplier_path,
           sh.level + 1
    FROM supplier s
    JOIN supplier_hierarchy sh ON sh.s_nationkey = s.s_nationkey
    WHERE sh.level < 5
),
part_supplier AS (
    SELECT p.p_partkey, p.p_name, SUM(ps.ps_supplycost) AS total_supplycost, 
           COUNT(DISTINCT ps.ps_suppkey) AS supplier_count
    FROM part p
    JOIN partsupp ps ON p.p_partkey = ps.ps_partkey
    GROUP BY p.p_partkey, p.p_name
)
SELECT r.r_name, n.n_name, ps.p_partkey, ps.p_name, ps.total_supplycost, 
       COALESCE(sh.supplier_path, 'No supplier') AS supplier_path,
       ROW_NUMBER() OVER (PARTITION BY n.n_name ORDER BY ps.total_supplycost DESC) AS rank_cost
FROM region r
JOIN nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN part_supplier ps ON ps.p_partkey IN (
    SELECT ps_partkey
    FROM partsupp
    WHERE ps_suppkey IN (SELECT s_suppkey FROM supplier_hierarchy)
)
LEFT JOIN supplier_hierarchy sh ON sh.s_nationkey = n.n_nationkey
WHERE n.n_name LIKE '%land%'
AND n.n_nationkey NOT IN (SELECT DISTINCT n_nationkey FROM nation WHERE n_comment IS NULL)
ORDER BY r.r_name, n.n_name, ps.total_supplycost DESC
OFFSET 5 ROWS FETCH NEXT 10 ROWS ONLY
UNION ALL
SELECT DISTINCT n.n_name, r.r_name, NULL AS p_partkey, NULL AS p_name, 
                SUM(NULLIF(l.l_extendedprice * (1 - l.l_discount), 0)) AS total_revenue,
                'Total Revenue' as supplier_path,
                NULL AS rank_cost
FROM lineitem l
JOIN orders o ON l.l_orderkey = o.o_orderkey
JOIN customer c ON o.o_custkey = c.c_custkey
JOIN nation n ON c.c_nationkey = n.n_nationkey
JOIN region r ON n.n_regionkey = r.r_regionkey
WHERE l.l_shipdate BETWEEN DATE '1997-01-01' AND DATE '1997-12-31'
GROUP BY n.n_name, r.r_name
HAVING SUM(l.l_extendedprice) IS NOT NULL
ORDER BY n.n_name;