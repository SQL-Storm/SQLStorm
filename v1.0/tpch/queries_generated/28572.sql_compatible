
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_nationkey,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_value,
        RANK() OVER (PARTITION BY s.s_nationkey ORDER BY SUM(ps.ps_supplycost * ps.ps_availqty) DESC) AS supplier_rank
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name, s.s_nationkey
),
NationStats AS (
    SELECT 
        n.n_nationkey,
        n.n_name,
        COUNT(DISTINCT r.r_regionkey) AS total_regions,
        COUNT(DISTINCT s.s_suppkey) AS total_suppliers,
        COALESCE(SUM(rs.total_value), 0) AS total_supply_value
    FROM 
        nation n
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
    LEFT JOIN 
        RankedSuppliers rs ON n.n_nationkey = rs.s_nationkey
    GROUP BY 
        n.n_nationkey, n.n_name
)
SELECT 
    ns.n_nationkey,
    ns.n_name,
    ns.total_regions,
    ns.total_suppliers,
    ns.total_supply_value,
    CONCAT('Nation: ', ns.n_name, 
           '; Regions: ', ns.total_regions, 
           '; Total Suppliers: ', ns.total_suppliers, 
           '; Total Supply Value: $', CAST(ns.total_supply_value AS DECIMAL(10, 2))) AS nation_summary
FROM 
    NationStats ns
WHERE 
    ns.total_suppliers > 0
ORDER BY 
    ns.total_supply_value DESC,
    ns.n_name;
