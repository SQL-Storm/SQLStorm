
WITH SupplierRevenue AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        lineitem l ON ps.ps_partkey = l.l_partkey
    GROUP BY 
        s.s_suppkey, s.s_name
), RankedSuppliers AS (
    SELECT 
        sr.*, 
        RANK() OVER (ORDER BY sr.total_revenue DESC) AS revenue_rank
    FROM 
        SupplierRevenue sr
), HighRevenueSuppliers AS (
    SELECT 
        r.r_regionkey, 
        r.r_name, 
        rs.s_suppkey, 
        rs.s_name, 
        rs.total_revenue
    FROM 
        region r
    LEFT JOIN 
        nation n ON r.r_regionkey = n.n_regionkey
    LEFT JOIN 
        (SELECT 
            s.s_suppkey, 
            s.s_name, 
            sr.total_revenue 
         FROM 
            RankedSuppliers rs
         JOIN 
            supplier s ON rs.s_suppkey = s.s_suppkey 
         WHERE 
            rs.revenue_rank <= 10) rs ON n.n_nationkey = s.s_nationkey
)
SELECT 
    r.r_name AS region_name, 
    COUNT(DISTINCT hs.s_suppkey) AS supplier_count,
    SUM(hs.total_revenue) AS total_revenue,
    AVG(hs.total_revenue) AS avg_revenue,
    MAX(hs.total_revenue) AS max_revenue,
    MIN(hs.total_revenue) AS min_revenue
FROM 
    HighRevenueSuppliers hs
JOIN 
    region r ON hs.r_regionkey = r.r_regionkey
GROUP BY 
    r.r_name
HAVING 
    COUNT(DISTINCT hs.s_suppkey) > 0
ORDER BY 
    total_revenue DESC
LIMIT 5;
