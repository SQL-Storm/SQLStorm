
WITH RankedSuppliers AS (
    SELECT s.s_suppkey, s.s_name, s.s_acctbal,
           ROW_NUMBER() OVER (PARTITION BY s.s_nationkey ORDER BY s.s_acctbal DESC) AS rn
    FROM supplier s
),
RecentOrders AS (
    SELECT o.o_orderkey, o.o_custkey, o.o_orderdate,
           SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_revenue
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE o.o_orderdate >= CURRENT_DATE - INTERVAL '6 months'
    GROUP BY o.o_orderkey, o.o_custkey, o.o_orderdate
),
HighValueCustomers AS (
    SELECT c.c_custkey, c.c_name, c.c_acctbal,
           RANK() OVER (ORDER BY c.c_acctbal DESC) AS cust_rank
    FROM customer c
    WHERE c.c_acctbal > (SELECT AVG(c_acctbal) FROM customer)
),
DistinctParts AS (
    SELECT DISTINCT p.p_partkey, p.p_name
    FROM part p
    WHERE EXISTS (
        SELECT 1
        FROM partsupp ps
        WHERE ps.ps_partkey = p.p_partkey AND ps.ps_availqty > 0
    )
)
SELECT n.n_name, COUNT(DISTINCT c.c_custkey) AS number_of_customers,
       SUM(l.l_extendedprice) AS total_sales,
       AVG(ps.ps_supplycost) AS avg_supply_cost
FROM nation n
LEFT JOIN customer c ON n.n_nationkey = c.c_nationkey
LEFT JOIN RecentOrders ro ON c.c_custkey = ro.o_custkey
LEFT JOIN lineitem l ON ro.o_orderkey = l.l_orderkey
LEFT JOIN partsupp ps ON l.l_partkey = ps.ps_partkey 
                       AND ps.ps_suppkey IN (SELECT s.s_suppkey FROM RankedSuppliers WHERE rn <= 5)
WHERE n.n_nationkey IN (SELECT r.r_regionkey FROM region r WHERE r.r_comment IS NOT NULL)
  AND (l.l_returnflag = 'R' OR l.l_returnflag IS NULL)
GROUP BY n.n_name
HAVING COUNT(DISTINCT c.c_custkey) > 10
   AND SUM(l.l_extendedprice) > (SELECT AVG(total_revenue) FROM RecentOrders)
ORDER BY total_sales DESC;
