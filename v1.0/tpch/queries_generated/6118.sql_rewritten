WITH RankedOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        o.o_totalprice,
        c.c_nationkey,
        RANK() OVER (PARTITION BY c.c_nationkey ORDER BY o.o_totalprice DESC) AS total_price_rank
    FROM 
        orders o
    JOIN 
        customer c ON o.o_custkey = c.c_custkey
    WHERE 
        o.o_orderdate >= '1997-01-01' AND o.o_orderdate <= '1997-12-31'
),
TopOrders AS (
    SELECT 
        r.o_orderkey,
        r.o_orderdate,
        r.o_totalprice,
        r.c_nationkey
    FROM 
        RankedOrders r
    WHERE 
        r.total_price_rank <= 10
),
LineItemSummary AS (
    SELECT 
        o.o_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_extended_price,
        COUNT(l.l_linenumber) AS item_count
    FROM 
        lineitem l
    JOIN 
        TopOrders o ON l.l_orderkey = o.o_orderkey
    GROUP BY 
        o.o_orderkey
)
SELECT 
    t.o_orderkey,
    t.o_orderdate,
    t.o_totalprice,
    l.total_extended_price,
    l.item_count,
    n.n_name,
    r.r_name,
    SUM(CASE WHEN s.s_acctbal IS NULL THEN 1 ELSE 0 END) AS suppliers_without_account_balance
FROM 
    TopOrders t
JOIN 
    lineitem l ON t.o_orderkey = l.l_orderkey
JOIN 
    supplier s ON l.l_suppkey = s.s_suppkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
GROUP BY 
    t.o_orderkey, t.o_orderdate, t.o_totalprice, n.n_name, r.r_name
ORDER BY 
    t.o_orderdate DESC, t.o_totalprice DESC;