
WITH ranked_parts AS (
    SELECT 
        p.p_partkey, 
        p.p_name, 
        p.p_retailprice, 
        ROW_NUMBER() OVER (PARTITION BY p.p_brand ORDER BY p.p_retailprice DESC) AS price_rank
    FROM 
        part p
    WHERE 
        p.p_size IN (SELECT DISTINCT ps.ps_availqty FROM partsupp ps WHERE ps.ps_supplycost > (SELECT AVG(ps2.ps_supplycost) FROM partsupp ps2))
), 
customer_summary AS (
    SELECT 
        c.c_custkey, 
        COUNT(o.o_orderkey) AS order_count, 
        SUM(o.o_totalprice) AS total_spent, 
        MAX(o.o_orderdate) AS last_order_date
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey
), 
supplier_info AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        COALESCE(SUM(ps.ps_availqty), 0) AS total_available, 
        COUNT(DISTINCT ps.ps_partkey) AS unique_parts
    FROM 
        supplier s
    LEFT JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name
), 
high_value_customers AS (
    SELECT 
        cs.c_custkey
    FROM 
        customer_summary cs
    WHERE 
        cs.total_spent > (SELECT AVG(cs2.total_spent) FROM customer_summary cs2)
), 
outer_joined_data AS (
    SELECT 
        r.r_name, 
        n.n_name, 
        s.s_name, 
        COALESCE(p.p_name, 'Unknown') AS part_name
    FROM 
        region r
    JOIN 
        nation n ON r.r_regionkey = n.n_regionkey
    LEFT JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    LEFT JOIN 
        ranked_parts p ON s.s_suppkey = (
            SELECT ps.ps_suppkey
            FROM partsupp ps
            WHERE ps.ps_partkey = p.p_partkey
            ORDER BY ps.ps_supplycost ASC
            LIMIT 1
        )
    WHERE 
        n.n_name LIKE 'A%' OR s.s_name IS NULL
)
SELECT 
    od.r_name, 
    od.n_name, 
    od.s_name, 
    od.part_name, 
    cs.order_count,
    cs.total_spent,
    s.total_available,
    s.unique_parts
FROM 
    outer_joined_data od
LEFT JOIN 
    customer_summary cs ON cs.c_custkey IN (SELECT hvc.c_custkey FROM high_value_customers hvc WHERE hvc.c_custkey = cs.c_custkey)
JOIN 
    supplier_info s ON od.s_name = s.s_name
WHERE 
    od.part_name IS NOT NULL
ORDER BY 
    cs.total_spent DESC, s.total_available ASC;
