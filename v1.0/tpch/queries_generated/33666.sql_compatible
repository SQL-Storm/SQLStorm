
WITH RECURSIVE supplier_hierarchy AS (
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, 1 AS level
    FROM supplier s
    WHERE s.s_acctbal > 10000

    UNION ALL

    SELECT s.s_suppkey, s.s_name, s.s_nationkey, sh.level + 1
    FROM supplier_hierarchy sh
    JOIN partsupp ps ON ps.ps_suppkey = sh.s_suppkey
    JOIN part p ON p.p_partkey = ps.ps_partkey
    WHERE p.p_retailprice < 50.00
), nation_summary AS (
    SELECT n.n_name, COUNT(DISTINCT s.s_suppkey) AS supplier_count, SUM(s.s_acctbal) AS total_acctbal
    FROM nation n
    LEFT JOIN supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY n.n_name
), order_summary AS (
    SELECT o.o_orderkey, o.o_orderstatus, SUM(l.l_extendedprice * (1 - l.l_discount)) AS revenue
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY o.o_orderkey, o.o_orderstatus
), ranked_orders AS (
    SELECT o.*, DENSE_RANK() OVER (PARTITION BY o.o_orderstatus ORDER BY o.o_totalprice DESC) AS order_rank
    FROM orders o
    WHERE o.o_orderdate >= '1996-01-01' AND o.o_orderdate <= '1996-12-31'
)

SELECT n.n_name, ns.supplier_count, ns.total_acctbal, o.order_rank, o.o_totalprice
FROM nation_summary ns
JOIN nation n ON ns.n_name = n.n_name
LEFT JOIN ranked_orders o ON o.o_orderstatus = 'O'
WHERE n.n_regionkey IN (
    SELECT r.r_regionkey
    FROM region r
    WHERE r.r_name LIKE '%'
)
ORDER BY ns.total_acctbal DESC, n.n_name ASC
OFFSET 10 ROWS FETCH NEXT 5 ROWS ONLY;
