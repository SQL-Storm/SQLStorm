
WITH SupplierStats AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost,
        COUNT(DISTINCT ps.ps_partkey) AS part_count
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name
),
OrderStats AS (
    SELECT 
        o.o_orderkey,
        o.o_custkey,
        o.o_orderdate,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_amount,
        COUNT(l.l_orderkey) AS line_count
    FROM 
        orders o
    JOIN 
        lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE 
        o.o_orderstatus = 'O'
    GROUP BY 
        o.o_orderkey, o.o_custkey, o.o_orderdate
),
NationRegion AS (
    SELECT 
        n.n_nationkey, 
        r.r_regionkey,
        r.r_name AS region_name
    FROM 
        nation n
    LEFT JOIN 
        region r ON n.n_regionkey = r.r_regionkey
),
CustomerOrders AS (
    SELECT 
        c.c_custkey,
        COUNT(o.o_orderkey) AS order_count
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey
)
SELECT 
    s.s_name,
    ss.total_supply_cost,
    ss.part_count,
    COALESCE(o.order_count, 0) AS order_count,
    r.region_name,
    COALESCE(o.total_amount, 0) AS total_order_amount,
    DENSE_RANK() OVER (PARTITION BY r.r_regionkey ORDER BY ss.total_supply_cost DESC) AS supply_rank
FROM 
    SupplierStats ss
LEFT JOIN 
    CustomerOrders o ON ss.s_suppkey = o.c_custkey
LEFT JOIN 
    NationRegion nr ON o.c_custkey = nr.n_nationkey
LEFT JOIN 
    region r ON nr.r_regionkey = r.r_regionkey
WHERE 
    ss.total_supply_cost > (SELECT AVG(total_supply_cost) FROM SupplierStats)
ORDER BY 
    supply_rank, ss.total_supply_cost DESC;
