WITH RECURSIVE CustomerOrders AS (
    SELECT c.c_custkey, c.c_name, o.o_orderkey, o.o_orderdate, o.o_totalprice,
           ROW_NUMBER() OVER (PARTITION BY c.c_custkey ORDER BY o.o_orderdate DESC) AS rn
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    WHERE o.o_orderdate >= (cast('1998-10-01' as date) - INTERVAL '2 years')
    UNION ALL
    SELECT co.c_custkey, co.c_name, o.o_orderkey, o.o_orderdate, o.o_totalprice,
           ROW_NUMBER() OVER (PARTITION BY co.c_custkey ORDER BY o.o_orderdate DESC)
    FROM CustomerOrders co
    JOIN orders o ON co.c_custkey = o.o_custkey
    WHERE o.o_orderdate < co.o_orderdate AND co.rn < 5
),
HighValueSuppliers AS (
    SELECT ps.ps_suppkey, SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_value
    FROM partsupp ps
    GROUP BY ps.ps_suppkey
    HAVING SUM(ps.ps_supplycost * ps.ps_availqty) > 100000
),
RecentLineItems AS (
    SELECT l.l_orderkey, SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_price
    FROM lineitem l
    WHERE l.l_shipdate > (cast('1998-10-01' as date) - INTERVAL '30 days')
    GROUP BY l.l_orderkey
),
OrderSummary AS (
    SELECT o.o_orderkey, COUNT(DISTINCT l.l_linenumber) AS lineitem_count,
           SUM(l.l_extendedprice) AS total_extended_price
    FROM orders o
    LEFT JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY o.o_orderkey
),
CustomerRanking AS (
    SELECT co.c_custkey, co.c_name, COUNT(o.o_orderkey) AS order_count,
           RANK() OVER (ORDER BY COUNT(o.o_orderkey) DESC) AS rank
    FROM CustomerOrders co
    JOIN orders o ON co.o_orderkey = o.o_orderkey
    GROUP BY co.c_custkey, co.c_name
)
SELECT cr.c_name AS customer_name, 
       cr.order_count AS total_orders,
       o.lineitem_count,
       COALESCE(ri.total_price, 0) AS recent_lineitem_total,
       COALESCE(hv.total_supply_value, 0) AS high_value_supplier_total
FROM CustomerRanking cr
LEFT JOIN OrderSummary o ON cr.order_count = o.lineitem_count
LEFT JOIN RecentLineItems ri ON o.o_orderkey = ri.l_orderkey
LEFT JOIN HighValueSuppliers hv ON hv.ps_suppkey = (SELECT ps.ps_suppkey FROM partsupp ps ORDER BY RANDOM() LIMIT 1)
WHERE cr.rank <= 10
ORDER BY cr.total_orders DESC, customer_name;