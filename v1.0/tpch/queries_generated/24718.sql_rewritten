WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        ROW_NUMBER() OVER (PARTITION BY s.s_nationkey ORDER BY s.s_acctbal DESC) AS rank
    FROM 
        supplier s
),
MaxPartPrices AS (
    SELECT 
        ps.ps_partkey, 
        MAX(ps.ps_supplycost) AS max_cost
    FROM 
        partsupp ps
    GROUP BY 
        ps.ps_partkey
),
CustomerOrderStats AS (
    SELECT 
        c.c_custkey,
        SUM(o.o_totalprice) AS total_spent,
        COUNT(o.o_orderkey) AS order_count
    FROM 
        customer c
        LEFT JOIN orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey
),
FilteredOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        CASE 
            WHEN o.o_orderstatus = 'F' THEN 'Fulfilled'
            ELSE 'Pending'
        END AS order_status
    FROM 
        orders o
    WHERE 
        o.o_orderdate >= '1997-01-01'
),
HighValueLineItems AS (
    SELECT 
        l.l_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_value
    FROM 
        lineitem l
    GROUP BY 
        l.l_orderkey
    HAVING 
        SUM(l.l_extendedprice * (1 - l.l_discount)) > 1000
)

SELECT 
    c.c_name,
    c.c_acctbal,
    COALESCE(order_stats.total_spent, 0) AS total_spent,
    COALESCE(order_stats.order_count, 0) AS order_count,
    COALESCE(ranked_su.s_name, 'No Supplier') AS supplier_name,
    MAX(mpp.max_cost) AS max_price,
    COUNT(DISTINCT foi.o_orderkey) AS high_value_orders
FROM 
    customer c
    LEFT JOIN CustomerOrderStats order_stats ON c.c_custkey = order_stats.c_custkey
    LEFT JOIN RankedSuppliers ranked_su ON ranked_su.rank = 1 AND ranked_su.s_suppkey IN (
        SELECT ps.ps_suppkey FROM partsupp ps WHERE ps.ps_partkey IN (
            SELECT p.p_partkey FROM part p WHERE p.p_size < 10
        )
    )
    LEFT JOIN MaxPartPrices mpp ON mpp.ps_partkey = (
        SELECT p.p_partkey 
        FROM part p 
        WHERE p.p_brand = 'Brand#45' 
        LIMIT 1
    )
    LEFT JOIN FilteredOrders foi ON foi.o_orderkey IN (
        SELECT l.l_orderkey 
        FROM lineitem l 
        WHERE l.l_returnflag = 'R' 
        AND l.l_shipdate IS NULL
    )
GROUP BY 
    c.c_name, c.c_acctbal, ranked_su.s_name
ORDER BY 
    total_spent DESC, c.c_acctbal ASC;