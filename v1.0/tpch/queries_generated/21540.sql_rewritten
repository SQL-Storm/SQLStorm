WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        s.s_acctbal, 
        RANK() OVER (PARTITION BY p.p_partkey ORDER BY s.s_acctbal DESC) AS supplier_rank
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN part p ON ps.ps_partkey = p.p_partkey
),
TotalSales AS (
    SELECT 
        o.o_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    GROUP BY o.o_orderkey
),
CustomerRegion AS (
    SELECT 
        c.c_custkey,
        r.r_name AS region_name
    FROM customer c
    JOIN nation n ON c.c_nationkey = n.n_nationkey
    JOIN region r ON n.n_regionkey = r.r_regionkey
),
SupplierSales AS (
    SELECT 
        ss.s_suppkey,
        COUNT(DISTINCT o.o_orderkey) AS total_orders
    FROM RankedSuppliers ss
    LEFT JOIN partsupp ps ON ss.s_suppkey = ps.ps_suppkey
    LEFT JOIN lineitem l ON ps.ps_partkey = l.l_partkey
    LEFT JOIN orders o ON l.l_orderkey = o.o_orderkey
    WHERE ss.supplier_rank = 1
    GROUP BY ss.s_suppkey
)
SELECT 
    cr.region_name,
    COUNT(DISTINCT cs.c_custkey) AS customer_count,
    COALESCE(SUM(ts.total_sales), 0) AS total_sales_amount,
    COUNT(DISTINCT ss.s_suppkey) AS unique_supplier_count,
    AVG(NULLIF(s.s_acctbal, 0)) AS avg_supplier_acctbal
FROM CustomerRegion cr
LEFT JOIN CustomerRegion cs ON cr.region_name = cs.region_name
LEFT JOIN TotalSales ts ON ts.o_orderkey IN (SELECT o_orderkey FROM orders WHERE o_orderkey IN (1, 2, 3)) 
LEFT JOIN SupplierSales ss ON ss.s_suppkey IN (SELECT s_suppkey FROM RankedSuppliers WHERE supplier_rank = 2)
LEFT JOIN Supplier s ON ss.s_suppkey = s.s_suppkey
GROUP BY cr.region_name
HAVING COUNT(DISTINCT cs.c_custkey) > 0 
   OR SUM(ts.total_sales) IS NULL 
   OR COUNT(ss.s_suppkey) > (SELECT COUNT(DISTINCT s.s_suppkey) FROM supplier s WHERE s.s_acctbal < 100) 
ORDER BY cr.region_name;