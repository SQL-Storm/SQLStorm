
WITH RECURSIVE NationHierarchy AS (
    SELECT n.n_nationkey, n.n_name, 1 AS level
    FROM nation n
    WHERE n.n_regionkey = (SELECT r.r_regionkey FROM region r WHERE r.r_name = 'ASIA')
    
    UNION ALL
    
    SELECT n.n_nationkey, n.n_name, nh.level + 1
    FROM nation n
    JOIN NationHierarchy nh ON n.n_regionkey = nh.n_nationkey
), 
CustomerOrderStats AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COUNT(o.o_orderkey) AS total_orders,
        SUM(o.o_totalprice) AS total_spent
    FROM customer c
    LEFT JOIN orders o ON c.c_custkey = o.o_custkey
    GROUP BY c.c_custkey, c.c_name
),
SupplierPartStats AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        SUM(ps.ps_availqty) AS total_available,
        AVG(ps.ps_supplycost) AS avg_supply_cost
    FROM partsupp ps
    JOIN supplier s ON ps.ps_suppkey = s.s_suppkey
    GROUP BY s.s_suppkey, s.s_name
),
OrderLineItemStats AS (
    SELECT 
        o.o_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_lineitem_value,
        COUNT(DISTINCT l.l_partkey) AS unique_parts_count
    FROM lineitem l
    JOIN orders o ON l.l_orderkey = o.o_orderkey
    GROUP BY o.o_orderkey
)
SELECT 
    nh.n_name AS nation_name,
    c.c_name AS customer_name,
    COALESCE(cos.total_orders, 0) AS customer_order_count,
    COALESCE(cos.total_spent, 0) AS customer_total_spent,
    s.s_name AS supplier_name,
    COALESCE(sps.total_available, 0) AS supplier_total_available,
    COALESCE(sps.avg_supply_cost, 0) AS supplier_avg_supply_cost,
    oli.total_lineitem_value AS order_value,
    oli.unique_parts_count AS parts_count
FROM NationHierarchy nh
LEFT JOIN CustomerOrderStats cos ON cos.c_custkey IN (
    SELECT c.c_custkey FROM customer c WHERE c.c_nationkey = nh.n_nationkey
)
LEFT JOIN SupplierPartStats sps ON sps.s_suppkey IN (
    SELECT ps.ps_suppkey FROM partsupp ps
    JOIN part p ON ps.ps_partkey = p.p_partkey
)
LEFT JOIN OrderLineItemStats oli ON oli.o_orderkey = (
    SELECT o.o_orderkey 
    FROM orders o 
    WHERE o.o_custkey IN (SELECT c.c_custkey FROM customer c WHERE c.c_nationkey = nh.n_nationkey)
    LIMIT 1
)
ORDER BY nh.n_name, c.c_name, s.s_name;
