
SELECT 
    CONCAT('Product: ', p.p_name, ' | Size: ', p.p_size, ' | Brand: ', p.p_brand, ' | Price: $', FORMAT(p.p_retailprice, 2), 
           ' | Comment: ', SUBSTRING(p.p_comment, 1, 20), '...') AS product_info,
    r.r_name AS region_name,
    n.n_name AS nation_name,
    s.s_name AS supplier_name,
    COUNT(o.o_orderkey) AS total_orders
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
LEFT JOIN 
    lineitem l ON p.p_partkey = l.l_partkey
LEFT JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
WHERE 
    p.p_brand LIKE 'Brand%'
    AND p.p_size IN (10, 20, 30)
GROUP BY 
    p.p_partkey, p.p_name, p.p_size, p.p_brand, p.p_retailprice, p.p_comment, 
    r.r_name, n.n_name, s.s_name
ORDER BY 
    total_orders DESC, p.p_retailprice ASC
FETCH FIRST 50 ROWS ONLY;
