WITH RECURSIVE CustomerHierarchy AS (
    SELECT c.c_custkey, c.c_name, c.c_nationkey, 1 AS level
    FROM customer c
    WHERE c.c_nationkey = (SELECT n.n_nationkey FROM nation n WHERE n.n_name = 'USA')

    UNION ALL

    SELECT c.c_custkey, c.c_name, ch.c_nationkey, ch.level + 1
    FROM customer c
    JOIN CustomerHierarchy ch ON c.c_nationkey = ch.c_nationkey
    WHERE ch.level < 5
), CostAnalysis AS (
    SELECT 
        ps.ps_partkey,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_cost,
        RANK() OVER (PARTITION BY ps.ps_partkey ORDER BY SUM(ps.ps_supplycost * ps.ps_availqty) DESC) AS rank_cost
    FROM partsupp ps
    GROUP BY ps.ps_partkey
), RegionSummary AS (
    SELECT 
        r.r_name,
        COUNT(DISTINCT n.n_nationkey) AS nation_count,
        COUNT(DISTINCT s.s_suppkey) AS supplier_count
    FROM region r
    LEFT JOIN nation n ON r.r_regionkey = n.n_regionkey
    LEFT JOIN supplier s ON n.n_nationkey = s.s_nationkey
    GROUP BY r.r_name
    HAVING COUNT(DISTINCT n.n_nationkey) > 0
), OrderDetails AS (
    SELECT 
        o.o_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_lineitem_price,
        COUNT(l.l_orderkey) AS total_lineitems,
        AVG(l.l_discount) AS avg_discount
    FROM orders o
    JOIN lineitem l ON o.o_orderkey = l.l_orderkey
    WHERE o.o_orderdate BETWEEN '1994-01-01' AND '1994-12-31'
    GROUP BY o.o_orderkey
)
SELECT 
    ch.c_name,
    rs.r_name,
    SUM(da.total_lineitem_price) AS total_order_value,
    AVG(da.avg_discount) AS average_discount,
    cs.total_cost
FROM CustomerHierarchy ch
LEFT JOIN RegionSummary rs ON ch.c_nationkey = rs.nation_count
LEFT JOIN OrderDetails da ON ch.c_custkey = da.o_orderkey
LEFT JOIN CostAnalysis cs ON da.total_order_value > cs.total_cost
WHERE da.total_lineitems > 1
GROUP BY ch.c_name, rs.r_name, cs.total_cost
ORDER BY ch.c_name, rs.r_name;