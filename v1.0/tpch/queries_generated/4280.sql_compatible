
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        ROW_NUMBER() OVER (PARTITION BY n.n_nationkey ORDER BY s.s_acctbal DESC) AS rn
    FROM 
        supplier s
    JOIN 
        nation n ON s.s_nationkey = n.n_nationkey
    WHERE
        s.s_acctbal > (SELECT AVG(s2.s_acctbal) FROM supplier s2 WHERE s2.s_nationkey = s.s_nationkey)
),
CustomerOrders AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
    HAVING 
        SUM(o.o_totalprice) > 5000
),
OrderItems AS (
    SELECT 
        l.l_orderkey,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_price
    FROM 
        lineitem l
    WHERE 
        l.l_shipdate >= DATE '1997-01-01'
    GROUP BY 
        l.l_orderkey
),
SupplierParts AS (
    SELECT 
        ps.ps_partkey,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_cost
    FROM 
        partsupp ps
    GROUP BY 
        ps.ps_partkey
),
FinalResults AS (
    SELECT 
        c.c_name,
        COALESCE(SUM(oi.total_price), 0) AS total_order_value,
        COALESCE(SUM(sp.total_cost), 0) AS total_supply_cost,
        CASE 
            WHEN SUM(sp.total_cost) > 0 THEN SUM(oi.total_price) / SUM(sp.total_cost)
            ELSE NULL 
        END AS price_to_cost_ratio
    FROM 
        CustomerOrders c
    LEFT JOIN 
        OrderItems oi ON c.c_custkey = oi.l_orderkey
    LEFT JOIN 
        SupplierParts sp ON oi.l_orderkey = sp.ps_partkey
    GROUP BY 
        c.c_name
)
SELECT 
    r.r_name,
    f.c_name,
    f.total_order_value,
    f.total_supply_cost,
    f.price_to_cost_ratio
FROM 
    FinalResults f
JOIN 
    RankedSuppliers rs ON f.c_name LIKE '%' || rs.s_name || '%'
JOIN 
    nation n ON rs.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
WHERE 
    f.price_to_cost_ratio IS NOT NULL
ORDER BY 
    r.r_name, f.total_order_value DESC;
