
WITH RankedOrders AS (
    SELECT 
        o.o_orderkey,
        o.o_orderdate,
        o.o_totalprice,
        ROW_NUMBER() OVER (PARTITION BY o.o_custkey ORDER BY o.o_orderdate DESC) AS rnk
    FROM 
        orders o
    WHERE 
        o.o_orderdate >= DATE '1996-01-01' AND 
        o.o_orderstatus IN ('O', 'P')
),
SupplierInfo AS (
    SELECT 
        s.s_suppkey,
        s.s_name,
        s.s_acctbal,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY 
        s.s_suppkey, s.s_name, s.s_acctbal
),
CustomerOrders AS (
    SELECT 
        c.c_custkey,
        c.c_name,
        COUNT(o.o_orderkey) AS number_of_orders,
        SUM(CASE WHEN o.o_totalprice > 1000 THEN o.o_totalprice ELSE 0 END) AS high_value_orders
    FROM 
        customer c
    LEFT JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
),
TopRegions AS (
    SELECT 
        n.n_regionkey,
        r.r_name,
        COUNT(DISTINCT c.c_custkey) AS total_customers
    FROM 
        nation n
    JOIN 
        region r ON n.n_regionkey = r.r_regionkey
    LEFT JOIN 
        customer c ON n.n_nationkey = c.c_nationkey
    GROUP BY 
        n.n_regionkey, r.r_name
    HAVING 
        COUNT(DISTINCT c.c_custkey) > 0
)
SELECT 
    co.c_custkey,
    co.c_name,
    ro.o_orderkey,
    ro.o_totalprice,
    si.s_name,
    si.total_supply_cost,
    tr.r_name AS region_name,
    tr.total_customers,
    COALESCE(SUM(li.l_extendedprice * (1 - li.l_discount)), 0) AS total_lineitem_value
FROM 
    CustomerOrders co
INNER JOIN 
    RankedOrders ro ON co.c_custkey = (
        SELECT o.o_custkey 
        FROM RankedOrders 
        WHERE rnk = 1 AND o.o_orderkey = ro.o_orderkey
    )
LEFT JOIN 
    lineitem li ON ro.o_orderkey = li.l_orderkey
INNER JOIN 
    SupplierInfo si ON si.s_suppkey = (
        SELECT ps.ps_suppkey 
        FROM partsupp ps 
        JOIN lineitem l ON ps.ps_partkey = l.l_partkey 
        WHERE l.l_orderkey = ro.o_orderkey 
        GROUP BY ps.ps_suppkey 
        ORDER BY SUM(l.l_extendedprice) DESC 
        LIMIT 1
    )
INNER JOIN 
    TopRegions tr ON tr.total_customers > 100
GROUP BY 
    co.c_custkey, co.c_name, ro.o_orderkey, ro.o_totalprice, si.s_name, si.total_supply_cost, tr.r_name, tr.total_customers
HAVING 
    total_lineitem_value IS NOT NULL AND 
    total_lineitem_value > AVG(si.total_supply_cost) OVER ()
ORDER BY 
    co.c_custkey, ro.o_orderkey;
