WITH RegionSales AS (
    SELECT 
        r.r_name,
        SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales
    FROM 
        region r
    JOIN 
        nation n ON r.r_regionkey = n.n_regionkey
    JOIN 
        supplier s ON n.n_nationkey = s.s_nationkey
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
    JOIN 
        lineitem l ON p.p_partkey = l.l_partkey
    GROUP BY 
        r.r_name
), CustomerOrders AS (
    SELECT 
        c.c_custkey,
        SUM(o.o_totalprice) AS total_order_value,
        ROW_NUMBER() OVER (PARTITION BY c.c_nationkey ORDER BY SUM(o.o_totalprice) DESC) AS rnk
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    WHERE 
        o.o_orderdate >= DATE '1996-01-01'
    GROUP BY 
        c.c_custkey, c.c_nationkey
)
SELECT 
    rs.r_name,
    COALESCE(cs.total_order_value, 0) AS cust_order_value,
    rs.total_sales,
    CASE 
        WHEN rs.total_sales > 0 THEN ROUND((COALESCE(cs.total_order_value, 0) / rs.total_sales) * 100, 2)
        ELSE NULL
    END AS percentage_order_value
FROM 
    RegionSales rs
LEFT JOIN 
    CustomerOrders cs ON rs.r_name = (
        SELECT n.r_name 
        FROM nation n 
        WHERE n.n_nationkey = (SELECT c.c_nationkey FROM customer c WHERE cs.c_custkey = c.c_custkey)
    )
WHERE 
    rs.total_sales > 10000
ORDER BY 
    rs.r_name, cust_order_value DESC;