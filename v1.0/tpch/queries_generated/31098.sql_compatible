
WITH RECURSIVE OrderHierarchy AS (
    SELECT o.o_orderkey, o.o_orderdate, o.o_totalprice, 1 AS level
    FROM orders o
    WHERE o.o_orderstatus = 'O'
    UNION ALL
    SELECT o.o_orderkey, o.o_orderdate, o.o_totalprice, oh.level + 1
    FROM orders o
    INNER JOIN OrderHierarchy oh ON o.o_orderkey = oh.o_orderkey
    WHERE o.o_orderstatus = 'F'
),
SupplierDetails AS (
    SELECT s.s_suppkey, s.s_name, s.s_acctbal,
           ROW_NUMBER() OVER (PARTITION BY s.s_nationkey ORDER BY s.s_acctbal DESC) AS rn
    FROM supplier s
    WHERE s.s_acctbal > (
        SELECT AVG(s_acctbal)
        FROM supplier
        WHERE s_nationkey = s.s_nationkey
    )
),
PartSupplier AS (
    SELECT 
        ps.ps_partkey, 
        SUM(ps.ps_availqty) AS total_avail_qty,
        SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost,
        COUNT(DISTINCT ps.ps_suppkey) AS number_of_suppliers
    FROM partsupp ps
    GROUP BY ps.ps_partkey
),
CustomerOrders AS (
    SELECT c.c_custkey, c.c_name, SUM(o.o_totalprice) AS total_spent
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    GROUP BY c.c_custkey, c.c_name
),
NationRegion AS (
    SELECT n.n_nationkey, n.n_name, r.r_name
    FROM nation n
    JOIN region r ON n.n_regionkey = r.r_regionkey
)
SELECT 
    p.p_name,
    COALESCE(d.r_name, 'Unknown Region') AS region_name,
    SUM(CASE WHEN li.l_discount > 0.1 THEN li.l_extendedprice * (1 - li.l_discount) ELSE li.l_extendedprice END) AS total_revenue,
    COUNT(DISTINCT li.l_orderkey) AS total_orders,
    COUNT(DISTINCT cs.c_custkey) AS total_customers,
    AVG(cs.total_spent) AS avg_customer_spending
FROM part p
LEFT JOIN lineitem li ON p.p_partkey = li.l_partkey
LEFT JOIN SupplierDetails d ON d.s_suppkey = li.l_suppkey
LEFT JOIN CustomerOrders cs ON cs.c_custkey = (
    SELECT o.o_custkey FROM orders o WHERE o.o_orderkey = li.l_orderkey
)
LEFT JOIN NationRegion nr ON nr.n_nationkey = (
    SELECT s.s_nationkey FROM supplier s WHERE s.s_suppkey = li.l_suppkey
)
LEFT JOIN OrderHierarchy oh ON oh.o_orderkey = li.l_orderkey
WHERE p.p_retailprice IS NOT NULL
  AND li.l_shipdate BETWEEN '1997-01-01' AND '1997-12-31'
GROUP BY p.p_name, d.r_name
HAVING SUM(li.l_extendedprice) > 10000
ORDER BY total_revenue DESC, total_orders DESC;
