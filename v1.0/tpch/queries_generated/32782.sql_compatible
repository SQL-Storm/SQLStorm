
WITH RECURSIVE NationHierarchy AS (
    SELECT n.n_nationkey, n.n_name, n.n_regionkey, 0 AS level
    FROM nation n
    WHERE n.n_regionkey = (SELECT r.r_regionkey FROM region r WHERE r.r_name = 'ASIA')
    UNION ALL
    SELECT n.n_nationkey, n.n_name, n.n_regionkey, nh.level + 1
    FROM nation n
    JOIN NationHierarchy nh ON n.n_regionkey = nh.n_nationkey
),
SupplierCost AS (
    SELECT ps.ps_supkey, SUM(ps.ps_supplycost * ps.ps_availqty) AS total_cost
    FROM partsupp ps
    GROUP BY ps.ps_supkey
),
CustomerOrderSummary AS (
    SELECT c.c_custkey, c.c_name, SUM(o.o_totalprice) AS total_spent,
           COUNT(o.o_orderkey) AS order_count,
           ROW_NUMBER() OVER(PARTITION BY c.c_nationkey ORDER BY SUM(o.o_totalprice) DESC) AS rank
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    GROUP BY c.c_custkey, c.c_name, c.c_nationkey
),
TopCustomers AS (
    SELECT c.c_nationkey, c.c_name, cs.total_spent, cs.order_count
    FROM CustomerOrderSummary cs
    JOIN customer c ON cs.c_custkey = c.c_custkey
    WHERE cs.rank <= 5
)
SELECT nh.n_name AS nation_name, 
       SUM(s.s_acctbal) AS total_supplier_balance, 
       SUM(tc.total_spent) AS total_sales_from_top_customers
FROM SupplierCost s
FULL OUTER JOIN TopCustomers tc ON s.ps_supkey = tc.c_nationkey
JOIN nation nh ON tc.c_nationkey = nh.n_nationkey
GROUP BY nh.n_name
HAVING SUM(s.s_acctbal) IS NOT NULL OR SUM(tc.total_spent) IS NOT NULL
ORDER BY nh.n_name;
