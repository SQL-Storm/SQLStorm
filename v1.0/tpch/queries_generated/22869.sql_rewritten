WITH RECURSIVE nation_hierarchy AS (
    SELECT n_nationkey, n_name, n_regionkey, n_comment, 1 AS level
    FROM nation
    WHERE n_name LIKE 'A%'
    UNION ALL
    SELECT n.n_nationkey, n.n_name, n.n_regionkey, n.n_comment, nh.level + 1
    FROM nation n
    JOIN nation_hierarchy nh ON n.n_regionkey = nh.n_nationkey
),
supplier_details AS (
    SELECT s.s_suppkey, s.s_name, s.s_nationkey, 
           COALESCE(SUM(ps.ps_supplycost), 0) AS total_supply_cost,
           COUNT(ps.ps_partkey) AS supply_count
    FROM supplier s
    LEFT JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    GROUP BY s.s_suppkey, s.s_name, s.s_nationkey
),
average_orders AS (
    SELECT o.o_custkey,
           AVG(o.o_totalprice) AS avg_order_value
    FROM orders o
    WHERE o.o_orderdate >= '1994-01-01'
    GROUP BY o.o_custkey
),
rich_customers AS (
    SELECT c.c_custkey, c.c_name, c.c_acctbal
    FROM customer c
    WHERE c.c_acctbal IS NOT NULL
      AND c.c_acctbal > (SELECT AVG(c2.c_acctbal) * 1.5 FROM customer c2)
),
lineitem_summary AS (
    SELECT l.l_orderkey,
           SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_lineitem_value,
           COUNT(DISTINCT l.l_partkey) AS part_count
    FROM lineitem l
    WHERE l.l_shipdate <= cast('1998-10-01' as date)
    GROUP BY l.l_orderkey
)
SELECT nh.n_name, 
       GROUP_CONCAT(DISTINCT s.s_name) AS suppliers,
       COUNT(DISTINCT rc.c_custkey) AS rich_customer_count,
       AVG(ao.avg_order_value) AS average_order_value,
       SUM(ls.total_lineitem_value) AS total_lineitem_value,
       SUM(CASE WHEN s.total_supply_cost < 1000 THEN 1 ELSE 0 END) AS low_cost_suppliers
FROM region r
LEFT JOIN nation_hierarchy nh ON r.r_regionkey = nh.n_regionkey
LEFT JOIN supplier_details s ON nh.n_nationkey = s.s_nationkey
LEFT JOIN rich_customers rc ON s.s_nationkey = rc.c_nationkey
LEFT JOIN average_orders ao ON rc.c_custkey = ao.o_custkey
LEFT JOIN lineitem_summary ls ON ls.l_orderkey = (SELECT MIN(l2.l_orderkey) 
                                                  FROM lineitem l2 
                                                  WHERE l2.l_linestatus = 'O')
WHERE r.r_name IS NOT NULL
GROUP BY nh.n_name
ORDER BY total_lineitem_value DESC, rich_customer_count ASC;