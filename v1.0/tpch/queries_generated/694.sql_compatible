
WITH RankedSuppliers AS (
    SELECT 
        s.s_suppkey, 
        s.s_name, 
        s.s_acctbal, 
        ROW_NUMBER() OVER (PARTITION BY p.p_type ORDER BY s.s_acctbal DESC) AS rank
    FROM 
        supplier s
    JOIN 
        partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN 
        part p ON ps.ps_partkey = p.p_partkey
),
CustomerOrders AS (
    SELECT 
        c.c_custkey, 
        c.c_name, 
        o.o_orderkey, 
        SUM(o.o_totalprice) AS total_spent
    FROM 
        customer c
    JOIN 
        orders o ON c.c_custkey = o.o_custkey
    GROUP BY 
        c.c_custkey, c.c_name
),
HighSpenders AS (
    SELECT 
        c.c_custkey AS custkey, 
        c.total_spent
    FROM 
        CustomerOrders c
    WHERE 
        c.total_spent > (SELECT AVG(total_spent) FROM CustomerOrders)
)
SELECT 
    r.r_name AS region_name,
    COUNT(DISTINCT hs.custkey) AS high_spender_count,
    SUM(ps.ps_supplycost * ps.ps_availqty) AS total_supply_cost,
    MAX(rs.s_acctbal) AS highest_account_balance
FROM 
    region r
LEFT JOIN 
    nation n ON r.r_regionkey = n.n_regionkey
LEFT JOIN 
    supplier s ON n.n_nationkey = s.s_nationkey
LEFT JOIN 
    partsupp ps ON s.s_suppkey = ps.ps_suppkey
LEFT JOIN 
    RankedSuppliers rs ON ps.ps_partkey IN (SELECT p.p_partkey FROM part p WHERE p.p_type LIKE '%widget%') 
LEFT JOIN 
    HighSpenders hs ON hs.custkey = s.s_suppkey
WHERE 
    s.s_acctbal IS NOT NULL
GROUP BY 
    r.r_name
HAVING 
    COUNT(DISTINCT hs.custkey) > 0 
ORDER BY 
    total_supply_cost DESC;
