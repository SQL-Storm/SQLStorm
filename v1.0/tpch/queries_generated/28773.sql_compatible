
SELECT 
    p.p_name,
    SUBSTRING_INDEX(SUBSTRING_INDEX(s.s_comment, ' ', 5), ' ', -5) AS supplier_comment_excerpt,
    CONCAT(n.n_name, ' - ', r.r_name) AS nation_region_combination,
    COUNT(DISTINCT o.o_orderkey) AS order_count,
    SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales,
    AVG(CASE WHEN l.l_returnflag = 'Y' THEN l.l_quantity END) AS avg_returned_quantity,
    COUNT(DISTINCT CASE WHEN c.c_mktsegment = 'BUILDING' THEN c.c_custkey END) AS building_customers
FROM 
    part p
JOIN 
    partsupp ps ON p.p_partkey = ps.ps_partkey
JOIN 
    supplier s ON ps.ps_suppkey = s.s_suppkey
JOIN 
    lineitem l ON ps.ps_partkey = l.l_partkey
JOIN 
    orders o ON l.l_orderkey = o.o_orderkey
JOIN 
    customer c ON o.o_custkey = c.c_custkey
JOIN 
    nation n ON s.s_nationkey = n.n_nationkey
JOIN 
    region r ON n.n_regionkey = r.r_regionkey
WHERE 
    p.p_container LIKE '%BOX%'
    AND l.l_shipdate BETWEEN '1997-01-01' AND '1997-12-31'
GROUP BY 
    p.p_name, 
    s.s_comment, 
    n.n_name,
    r.r_name
HAVING 
    COUNT(DISTINCT o.o_orderkey) > 10
ORDER BY 
    total_sales DESC, p.p_name ASC;
