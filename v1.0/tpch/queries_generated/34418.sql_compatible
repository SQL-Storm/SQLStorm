
WITH RECURSIVE sales_hierarchy AS (
    SELECT c.c_custkey, c.c_name, o.o_orderkey, o.o_orderdate, o.o_totalprice,
           ROW_NUMBER() OVER (PARTITION BY c.c_custkey ORDER BY o.o_totalprice DESC) AS top_order
    FROM customer c
    JOIN orders o ON c.c_custkey = o.o_custkey
    WHERE o.o_orderstatus = 'O'
),
high_value_orders AS (
    SELECT s.s_suppkey, s.s_name, ps.ps_partkey, 
           SUM(l.l_extendedprice * (1 - l.l_discount)) AS total_sales,
           COUNT(DISTINCT o.o_orderkey) AS order_count
    FROM supplier s
    JOIN partsupp ps ON s.s_suppkey = ps.ps_suppkey
    JOIN lineitem l ON ps.ps_partkey = l.l_partkey
    JOIN orders o ON l.l_orderkey = o.o_orderkey
    WHERE l.l_shipdate >= DATE '1996-01-01' AND l.l_shipdate <= DATE '1996-12-31'
    GROUP BY s.s_suppkey, s.s_name, ps.ps_partkey
),
top_suppliers AS (
    SELECT s.s_suppkey, s.s_name, SUM(hv.total_sales) AS total_sales
    FROM high_value_orders hv
    JOIN supplier s ON hv.s_suppkey = s.s_suppkey
    GROUP BY s.s_suppkey, s.s_name
    HAVING SUM(hv.total_sales) > (SELECT AVG(total_sales) FROM high_value_orders)
),
region_summary AS (
    SELECT r.r_name, COUNT(DISTINCT c.c_custkey) AS customer_count,
           AVG(c.c_acctbal) AS avg_account_balance
    FROM region r
    JOIN nation n ON r.r_regionkey = n.n_regionkey
    JOIN customer c ON n.n_nationkey = c.c_nationkey
    GROUP BY r.r_name
)
SELECT r.r_name AS region_name, 
       ts.s_name AS supplier_name, 
       ts.total_sales,
       rh.customer_count,
       rh.avg_account_balance
FROM region_summary rh
FULL OUTER JOIN top_suppliers ts ON rh.customer_count > 0 AND ts.total_sales IS NOT NULL
WHERE ts.total_sales IS NOT NULL OR rh.customer_count IS NOT NULL
ORDER BY r.r_name, ts.total_sales DESC;
