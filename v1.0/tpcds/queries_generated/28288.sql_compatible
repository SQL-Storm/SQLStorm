
WITH CustomerDetails AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        c.c_email_address,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country,
        ROW_NUMBER() OVER(PARTITION BY c.c_customer_id ORDER BY c.c_birth_year DESC) AS rn
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    WHERE 
        cd.cd_purchase_estimate > 5000 
        AND ca.ca_state IN ('CA', 'TX', 'NY')
), EmailStatistics AS (
    SELECT 
        SUBSTRING(c.full_name, CHARINDEX(' ', c.full_name) + 1, LEN(c.full_name)) AS last_name,
        COUNT(c.c_email_address) AS email_count
    FROM CustomerDetails c
    WHERE c.rn = 1
    GROUP BY 
        SUBSTRING(c.full_name, CHARINDEX(' ', c.full_name) + 1, LEN(c.full_name))
), GenderDistribution AS (
    SELECT 
        cd.cd_gender,
        COUNT(*) AS gender_count
    FROM CustomerDetails cd
    WHERE cd.rn = 1
    GROUP BY cd.cd_gender
)
SELECT 
    e.last_name,
    e.email_count,
    g.cd_gender,
    g.gender_count
FROM EmailStatistics e
JOIN GenderDistribution g ON g.gender_count > 10
ORDER BY e.email_count DESC, e.last_name;
