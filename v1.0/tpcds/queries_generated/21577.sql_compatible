
WITH item_summary AS (
    SELECT 
        i.i_item_sk,
        i.i_item_id,
        COUNT(DISTINCT ws.ws_order_number) AS total_web_orders,
        SUM(ws.ws_net_profit) AS total_web_profit,
        AVG(ws.ws_sales_price) AS avg_web_sales_price
    FROM 
        item i
    LEFT JOIN 
        web_sales ws ON i.i_item_sk = ws.ws_item_sk 
    WHERE 
        i.i_rec_start_date <= DATE '2002-10-01' AND 
        (i.i_rec_end_date > DATE '2002-10-01' OR i.i_rec_end_date IS NULL)
    GROUP BY 
        i.i_item_sk, i.i_item_id
),
customer_summary AS (
    SELECT 
        c.c_customer_sk,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        COALESCE(SUM(ws.ws_net_profit), 0) AS total_profit,
        MAX(cd.cd_purchase_estimate) AS max_purchase_estimate
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        c.c_customer_sk
),
sales_summary AS (
    SELECT 
        ss.s_store_sk,
        SUM(ss.ss_net_paid) AS total_store_sales,
        AVG(ss.ss_sales_price) AS avg_store_sale_price,
        COUNT(DISTINCT ss.ss_ticket_number) AS total_sales_count
    FROM 
        store_sales ss
    GROUP BY 
        ss.s_store_sk
)
SELECT 
    c.c_customer_sk,
    cs.total_orders,
    cs.total_profit,
    cs.max_purchase_estimate,
    i.i_item_id,
    is.total_web_orders,
    is.total_web_profit,
    is.avg_web_sales_price,
    s.s_store_sk,
    ss.total_store_sales,
    ss.avg_store_sale_price,
    ss.total_sales_count
FROM 
    customer_summary cs
JOIN 
    item_summary is ON cs.total_orders > 0
LEFT JOIN 
    sales_summary ss ON ss.total_store_sales > 1000
JOIN 
    customer c ON cs.c_customer_sk = c.c_customer_sk
JOIN 
    item i ON is.i_item_sk = i.i_item_sk
WHERE 
    (cs.total_profit > 0 OR is.total_web_profit IS NOT NULL)
    AND (cs.max_purchase_estimate IS NOT NULL OR cs.total_orders > 5)
    AND (i.i_item_id LIKE 'A%' OR i.i_item_id LIKE 'C%')
    AND NOT EXISTS (
        SELECT 1 
        FROM catalog_sales cs
        WHERE cs.cs_item_sk = i.i_item_sk AND cs.cs_order_number IN (
            SELECT cr.cr_order_number 
            FROM catalog_returns cr 
            WHERE cr.cr_return_quantity > 0
        )
    )
ORDER BY 
    cs.total_profit DESC NULLS LAST,
    is.avg_web_sales_price ASC 
LIMIT 100 OFFSET 20;
