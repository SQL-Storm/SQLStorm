
WITH AddressMix AS (
    SELECT 
        ca_address_sk,
        TRIM(CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type)) AS full_address,
        LOWER(CONCAT(ca_city, ', ', ca_state, ' ', ca_zip)) AS formatted_location
    FROM 
        customer_address
),
CustomerMix AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        AM.full_address,
        AM.formatted_location
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        AddressMix AM ON c.c_current_addr_sk = AM.ca_address_sk
),
SalesAnalysis AS (
    SELECT 
        ws_bill_cdemo_sk,
        COUNT(DISTINCT ws_order_number) AS total_orders,
        SUM(ws_net_paid) AS total_spent,
        AVG(ws_net_paid) AS avg_spent,
        SUM(ws_quantity) AS total_items,
        STRING_AGG(DISTINCT location, ', ') AS unique_locations
    FROM 
        web_sales ws
    JOIN 
        CustomerMix cm ON ws.ws_bill_cdemo_sk = cm.c_customer_sk
    GROUP BY 
        ws_bill_cdemo_sk
)
SELECT 
    cm.full_name,
    cm.cd_gender,
    cm.cd_marital_status,
    cm.cd_education_status,
    sa.total_orders,
    sa.total_spent,
    sa.avg_spent,
    sa.total_items,
    sa.unique_locations
FROM 
    CustomerMix cm
LEFT JOIN 
    SalesAnalysis sa ON cm.c_customer_sk = sa.ws_bill_cdemo_sk
ORDER BY 
    sa.total_spent DESC
FETCH FIRST 100 ROWS ONLY;
