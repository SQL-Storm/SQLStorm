WITH RankedCustomers AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        d.d_date AS last_purchase_date,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY d.d_date DESC) AS purchase_rank
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
),
FilteredCustomers AS (
    SELECT 
        rc.c_customer_sk,
        rc.full_name,
        rc.last_purchase_date
    FROM 
        RankedCustomers rc
    WHERE 
        rc.purchase_rank = 1
    AND 
        rc.last_purchase_date > DATEADD(day, -30, cast('2002-10-01' as date))
),
CustomerAddresses AS (
    SELECT 
        fc.c_customer_sk,
        ca.ca_street_number,
        ca.ca_street_name,
        ca.ca_city,
        ca.ca_state
    FROM 
        FilteredCustomers fc
    JOIN 
        customer_address ca ON fc.c_customer_sk = ca.ca_address_sk
),
CustomerInfo AS (
    SELECT 
        ca.c_customer_sk,
        ca.full_name,
        ca.ca_street_number,
        ca.ca_street_name,
        ca.ca_city,
        ca.ca_state,
        CD.cd_gender,
        CD.cd_marital_status,
        CD.cd_education_status
    FROM 
        CustomerAddresses ca
    JOIN 
        customer c ON ca.c_customer_sk = c.c_customer_sk
    JOIN 
        customer_demographics CD ON c.c_current_cdemo_sk = CD.cd_demo_sk
)
SELECT 
    CONCAT(ci.ca_street_number, ' ', ci.ca_street_name, ', ', ci.ca_city, ', ', ci.ca_state) AS full_address,
    ci.full_name,
    ci.cd_gender,
    ci.cd_marital_status,
    ci.cd_education_status
FROM 
    CustomerInfo ci
ORDER BY 
    ci.ca_city, ci.full_name;