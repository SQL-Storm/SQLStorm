
WITH RECURSIVE sales_summary AS (
    SELECT 
        ws.web_site_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_profit) AS total_net_profit,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        ROW_NUMBER() OVER (PARTITION BY ws.web_site_sk ORDER BY SUM(ws.ws_net_profit) DESC) AS rank
    FROM 
        web_sales ws
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    WHERE 
        c.c_birth_year BETWEEN 1980 AND 1990
    GROUP BY 
        ws.web_site_sk
),
customer_returns AS (
    SELECT 
        cr_returning_customer_sk,
        SUM(cr_return_quantity) AS total_return_quantity,
        SUM(cr_return_amount) AS total_return_amount
    FROM 
        catalog_returns
    GROUP BY 
        cr_returning_customer_sk
),
combined_sales AS (
    SELECT 
        ss.web_site_sk,
        ss.total_quantity,
        ss.total_net_profit,
        ss.order_count,
        COALESCE(cr.total_return_quantity, 0) AS total_return_quantity,
        COALESCE(cr.total_return_amount, 0) AS total_return_amount
    FROM 
        sales_summary ss
    LEFT JOIN 
        customer_returns cr ON ss.web_site_sk = cr.cr_returning_customer_sk
)
SELECT 
    c.c_customer_id,
    c.c_first_name,
    c.c_last_name,
    c.c_email_address,
    cs.total_quantity,
    cs.total_net_profit,
    cs.total_return_quantity,
    cs.total_return_amount,
    CASE 
        WHEN cs.total_net_profit - cs.total_return_amount > 0 THEN 'Profitable'
        ELSE 'Unprofitable'
    END AS profitability_status
FROM 
    combined_sales cs
JOIN 
    customer c ON cs.web_site_sk = c.c_customer_sk
WHERE 
    cs.rank <= 10 OR cs.total_net_profit < 0
ORDER BY 
    cs.total_net_profit DESC
FETCH FIRST 100 ROWS ONLY;
