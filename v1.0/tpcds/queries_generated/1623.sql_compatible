
WITH RankedSales AS (
    SELECT 
        ws.web_site_id,
        ws.ws_order_number,
        ws.ws_sold_date_sk,
        ws.ws_quantity,
        ws.ws_sales_price,
        RANK() OVER (PARTITION BY ws.web_site_id ORDER BY ws.ws_sold_date_sk DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023
),
HighValueWebsales AS (
    SELECT 
        r.web_site_id,
        r.ws_order_number,
        r.ws_quantity,
        r.ws_sales_price,
        r.sales_rank
    FROM 
        RankedSales r
    WHERE 
        r.sales_rank = 1 AND r.ws_sales_price > 100.00
),
TopCustomers AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_paid) AS total_spent
    FROM 
        web_sales ws
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    WHERE 
        EXISTS (
            SELECT 1 
            FROM HighValueWebsales hv 
            WHERE hv.ws_order_number = ws.ws_order_number 
            AND hv.web_site_id = c.c_customer_id
        )
    GROUP BY 
        c.c_customer_id
    ORDER BY 
        total_spent DESC
    LIMIT 10
)
SELECT 
    tc.c_customer_id,
    COALESCE(SUM(hv.ws_sales_price * hv.ws_quantity), 0) AS total_value,
    COUNT(hv.ws_order_number) AS order_count
FROM 
    TopCustomers tc
LEFT JOIN 
    HighValueWebsales hv ON tc.c_customer_id = hv.web_site_id
GROUP BY 
    tc.c_customer_id
HAVING 
    COUNT(hv.ws_order_number) > 5
ORDER BY 
    total_value DESC;
