
WITH RECURSIVE RecentSales AS (
    SELECT 
        ws_sold_date_sk,
        ws_quantity,
        ws_sales_price,
        ws_net_paid,
        ws_order_number,
        1 AS sales_level
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk = (SELECT MAX(ws_sold_date_sk) FROM web_sales)

    UNION ALL

    SELECT 
        ws.ws_sold_date_sk,
        ws.ws_quantity,
        ws.ws_sales_price,
        ws.ws_net_paid,
        ws.ws_order_number,
        rs.sales_level + 1
    FROM 
        web_sales ws
    JOIN 
        RecentSales rs ON ws.ws_order_number = rs.ws_order_number
    WHERE 
        ws_sold_date_sk < rs.ws_sold_date_sk AND rs.sales_level < 5
),
CustomerReturns AS (
    SELECT 
        sr_item_sk,
        SUM(sr_return_quantity) AS total_returns,
        SUM(sr_return_amt) AS total_return_amount
    FROM 
        store_returns 
    WHERE 
        sr_returned_date_sk > (SELECT MIN(d_date_sk) FROM date_dim WHERE d_year = 2001)
    GROUP BY 
        sr_item_sk
),
SalesWithReturns AS (
    SELECT
        ws.ws_item_sk,
        COALESCE(c.total_returns, 0) AS total_returns,
        SUM(ws.ws_quantity) AS total_sales,
        SUM(ws.ws_net_paid) AS total_sales_amount,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM
        web_sales ws
    LEFT JOIN 
        CustomerReturns c ON ws.ws_item_sk = c.sr_item_sk
    GROUP BY 
        ws.ws_item_sk
)
SELECT 
    i.i_item_id,
    i.i_product_name,
    s.total_sales,
    s.total_sales_amount,
    s.total_returns,
    s.order_count,
    RANK() OVER (ORDER BY s.total_sales_amount DESC) AS sales_rank,
    CASE
        WHEN s.total_sales_amount IS NULL THEN 'No Sales'
        WHEN s.total_sales_amount < 100 THEN 'Low Sales'
        WHEN s.total_sales_amount BETWEEN 100 AND 1000 THEN 'Moderate Sales'
        ELSE 'High Sales'
    END AS sales_category
FROM 
    SalesWithReturns s
JOIN 
    item i ON s.ws_item_sk = i.i_item_sk
WHERE 
    i.i_rec_start_date <= DATE '2002-10-01' AND (i.i_rec_end_date IS NULL OR i.i_rec_end_date >= DATE '2002-10-01')
ORDER BY 
    sales_rank
FETCH FIRST 100 ROWS ONLY;
