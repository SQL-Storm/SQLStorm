
WITH RECURSIVE sales_recursive AS (
    SELECT 
        ws.web_site_sk, 
        ws.web_name AS web_site_name, 
        ws.web_class, 
        ws.ws_sold_date_sk, 
        SUM(ws.ws_net_profit) AS total_net_profit,
        ROW_NUMBER() OVER (PARTITION BY ws.web_site_sk ORDER BY SUM(ws.ws_net_profit) DESC) AS rn
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023 
    GROUP BY 
        ws.web_site_sk, ws.web_name, ws.web_class, ws.ws_sold_date_sk
),
customer_details AS (
    SELECT 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        cd.cd_gender, 
        cd.cd_purchase_estimate, 
        cd.cd_credit_rating,
        ROW_NUMBER() OVER (ORDER BY cd.cd_purchase_estimate DESC) AS customer_rank
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        cd.cd_gender = 'F' AND cd.cd_purchase_estimate > 10000
),
high_income_customers AS (
    SELECT 
        hd.hd_demo_sk, 
        COUNT(c.c_customer_sk) AS customer_count
    FROM 
        household_demographics hd
    JOIN 
        customer c ON hd.hd_demo_sk = c.c_current_hdemo_sk
    WHERE 
        hd.hd_income_band_sk IN (SELECT ib_income_band_sk FROM income_band WHERE ib_upper_bound > 50000)
    GROUP BY 
        hd.hd_demo_sk
)
SELECT 
    r.web_site_name, 
    r.total_net_profit, 
    c.c_first_name, 
    c.c_last_name, 
    c.cd_gender, 
    c.cd_purchase_estimate,
    COALESCE((SELECT COUNT(*) FROM store_returns sr WHERE sr.sr_customer_sk = c.c_customer_sk), 0) AS return_count
FROM 
    sales_recursive r
JOIN 
    customer_details c ON r.web_site_sk = c.c_customer_sk
LEFT JOIN 
    high_income_customers h ON c.c_current_hdemo_sk = h.hd_demo_sk
WHERE 
    r.rn = 1 
AND 
    h.customer_count >= 5
ORDER BY 
    r.total_net_profit DESC, c.cd_purchase_estimate DESC;
