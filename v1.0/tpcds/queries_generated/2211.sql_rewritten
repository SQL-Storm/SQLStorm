WITH CustomerReturns AS (
    SELECT 
        sr_customer_sk,
        SUM(sr_return_quantity) AS total_returned,
        SUM(sr_return_amt_inc_tax) AS total_return_amt
    FROM 
        store_returns
    GROUP BY 
        sr_customer_sk
),
CustomerDemographics AS (
    SELECT 
        c.c_customer_id,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
TimeAnalysis AS (
    SELECT 
        d.d_year,
        d.d_month_seq,
        d.d_day_name,
        COUNT(ws_order_number) AS total_sales,
        SUM(ws_sales_price) AS total_sales_amount
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY 
        d.d_year, d.d_month_seq, d.d_day_name
),
TopItems AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_ext_sales_price) AS total_sales
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_item_sk
    ORDER BY 
        total_sales DESC
    LIMIT 10
)
SELECT 
    c.c_customer_id,
    cd.cd_gender,
    cd.cd_marital_status,
    cr.total_returned,
    cr.total_return_amt,
    ta.d_year,
    ta.d_month_seq,
    ta.d_day_name,
    ti.total_quantity,
    ti.total_sales
FROM 
    CustomerDemographics cd
LEFT JOIN 
    CustomerReturns cr ON cd.c_customer_id = cr.sr_customer_sk
LEFT JOIN 
    TimeAnalysis ta ON EXTRACT(YEAR FROM cast('2002-10-01 12:34:56' as timestamp)) = ta.d_year 
                 AND EXTRACT(MONTH FROM cast('2002-10-01 12:34:56' as timestamp)) = ta.d_month_seq 
                 AND ta.d_day_name = CASE 
                                        WHEN EXTRACT(DOW FROM cast('2002-10-01 12:34:56' as timestamp)) = 0 THEN 'Sunday' 
                                        WHEN EXTRACT(DOW FROM cast('2002-10-01 12:34:56' as timestamp)) = 1 THEN 'Monday' 
                                        WHEN EXTRACT(DOW FROM cast('2002-10-01 12:34:56' as timestamp)) = 2 THEN 'Tuesday' 
                                        WHEN EXTRACT(DOW FROM cast('2002-10-01 12:34:56' as timestamp)) = 3 THEN 'Wednesday' 
                                        WHEN EXTRACT(DOW FROM cast('2002-10-01 12:34:56' as timestamp)) = 4 THEN 'Thursday' 
                                        WHEN EXTRACT(DOW FROM cast('2002-10-01 12:34:56' as timestamp)) = 5 THEN 'Friday' 
                                        ELSE 'Saturday' 
                                    END
LEFT JOIN 
    TopItems ti ON cd.c_customer_sk = ti.ws_item_sk
WHERE 
    cd.cd_purchase_estimate > (SELECT AVG(cd_purchase_estimate) FROM customer_demographics)
ORDER BY 
    cr.total_return_amt DESC NULLS LAST;