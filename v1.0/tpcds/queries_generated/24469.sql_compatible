
WITH RankedSales AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        DENSE_RANK() OVER (PARTITION BY ws.web_site_id ORDER BY SUM(ws.ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        web_sales ws
    INNER JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2022
        AND NOT EXISTS (
            SELECT 1 
            FROM store s 
            WHERE s.s_store_sk = ws.ws_warehouse_sk 
              AND s.s_closed_date_sk IS NOT NULL
        )
    GROUP BY 
        ws.web_site_id
),
CustomerStats AS (
    SELECT 
        c.c_customer_id,
        COUNT(DISTINCT rs.order_count) AS unique_web_orders,
        SUM(CASE WHEN cd.cd_gender = 'M' THEN 1 ELSE 0 END) AS male_customers,
        SUM(CASE WHEN cd.cd_gender = 'F' THEN 1 ELSE 0 END) AS female_customers,
        MAX(rs.total_sales) AS highest_order_value
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        (
            SELECT 
                ws_bill_customer_sk,
                SUM(ws_ext_sales_price) AS total_sales,
                COUNT(ws_order_number) AS order_count
            FROM 
                web_sales
            GROUP BY 
                ws_bill_customer_sk
        ) rs ON rs.ws_bill_customer_sk = c.c_customer_sk
    GROUP BY 
        c.c_customer_id
)
SELECT 
    cs.c_customer_id,
    cs.unique_web_orders,
    cs.male_customers,
    cs.female_customers,
    cs.highest_order_value,
    r.total_sales AS total_sales_web_sites
FROM 
    CustomerStats cs
LEFT JOIN 
    RankedSales r ON cs.unique_web_orders > 0
WHERE 
    (CASE WHEN cs.male_customers IS NULL THEN 'No Data' ELSE 'Some Data' END) = 'Some Data'
ORDER BY 
    r.total_sales DESC
LIMIT 10
UNION ALL
SELECT 
    'Overall Total' AS c_customer_id,
    COUNT(DISTINCT c.c_customer_sk) AS total_customers,
    SUM(cs.male_customers) AS total_male_customers,
    SUM(cs.female_customers) AS total_female_customers,
    SUM(cs.highest_order_value) AS overall_highest_order_value,
    NULL AS total_sales_web_sites
FROM 
    CustomerStats cs
HAVING 
    SUM(cs.unique_web_orders) > 10;
