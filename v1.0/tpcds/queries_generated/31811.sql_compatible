
WITH RECURSIVE sales_hierarchy AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        hd.hd_income_band_sk,
        hd.hd_buy_potential,
        1 AS level
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
    WHERE 
        cd.cd_gender = 'F'
    
    UNION ALL
    
    SELECT 
        s.ss_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        hd.hd_income_band_sk,
        hd.hd_buy_potential,
        sh.level + 1
    FROM 
        sales_hierarchy sh
    JOIN 
        store_sales s ON sh.c_customer_sk = s.ss_customer_sk
    JOIN 
        customer c ON s.ss_customer_sk = c.c_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
    WHERE 
        sh.level < 5
),
income_summary AS (
    SELECT 
        ib.ib_income_band_sk,
        COUNT(c.c_customer_sk) AS customer_count,
        AVG(hd.hd_dep_count) AS avg_dependents
    FROM 
        household_demographics hd
    JOIN 
        income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
    JOIN 
        customer c ON hd.hd_demo_sk = c.c_current_hdemo_sk
    GROUP BY 
        ib.ib_income_band_sk
),
web_sales_summary AS (
    SELECT 
        ws.ws_sold_date_sk,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(ws.ws_order_number) AS total_orders,
        COUNT(DISTINCT ws.ws_bill_customer_sk) AS unique_customers
    FROM 
        web_sales ws
    WHERE 
        ws.ws_sold_date_sk >= (SELECT MAX(d.d_date_sk) FROM date_dim d WHERE d.d_year = 2023)
    GROUP BY 
        ws.ws_sold_date_sk
)
SELECT 
    sh.c_first_name,
    sh.c_last_name,
    sh.cd_gender,
    sh.hd_income_band_sk,
    sh.level,
    isum.customer_count,
    isum.avg_dependents,
    wss.total_profit,
    wss.total_orders,
    wss.unique_customers
FROM 
    sales_hierarchy sh
LEFT JOIN 
    income_summary isum ON sh.hd_income_band_sk = isum.ib_income_band_sk
LEFT JOIN 
    web_sales_summary wss ON wss.ws_sold_date_sk = (SELECT MAX(ws_sold_date_sk) FROM web_sales)
WHERE 
    sh.c_first_name IS NOT NULL
ORDER BY 
    sh.level,
    isum.customer_count DESC
FETCH FIRST 100 ROWS ONLY;
