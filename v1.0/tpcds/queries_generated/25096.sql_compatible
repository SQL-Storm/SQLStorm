
WITH CustomerDetails AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_salutation, ' ', c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country
    FROM 
        customer AS c
    JOIN 
        customer_demographics AS cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address AS ca ON c.c_current_addr_sk = ca.ca_address_sk
),
SalesData AS (
    SELECT 
        w.ws_bill_customer_sk,
        SUM(w.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT w.ws_order_number) AS order_count,
        COUNT(DISTINCT w.ws_item_sk) AS item_count
    FROM 
        web_sales AS w
    GROUP BY 
        w.ws_bill_customer_sk
),
HighSpenders AS (
    SELECT 
        cd.c_customer_id,
        cd.full_name,
        cd.ca_city,
        cd.ca_state,
        cd.ca_country,
        sd.total_sales,
        sd.order_count,
        sd.item_count,
        cd.cd_gender
    FROM 
        CustomerDetails AS cd
    JOIN 
        SalesData AS sd ON cd.c_customer_id = sd.ws_bill_customer_sk
    WHERE 
        sd.total_sales > 1000
)
SELECT 
    full_name,
    ca_city,
    ca_state,
    ca_country,
    total_sales,
    order_count,
    item_count,
    CASE 
        WHEN cd_gender = 'M' THEN 'Mr.'
        WHEN cd_gender = 'F' THEN 'Ms.'
        ELSE 'Mx.'
    END AS salutation_prefix
FROM 
    HighSpenders
ORDER BY 
    total_sales DESC;
