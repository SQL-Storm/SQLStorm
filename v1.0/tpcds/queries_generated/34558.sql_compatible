
WITH RECURSIVE sales_summary AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        SUM(ws.ws_ext_discount_amt) AS total_discount,
        COUNT(ws.ws_order_number) AS total_orders,
        RANK() OVER (PARTITION BY ws.web_site_id ORDER BY SUM(ws.ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023
    GROUP BY 
        ws.web_site_id
), top_sales AS (
    SELECT 
        web_site_id,
        total_sales,
        total_discount,
        total_orders
    FROM 
        sales_summary
    WHERE 
        sales_rank <= 10
), customer_info AS (
    SELECT 
        c.c_customer_id,
        cd.cd_gender,
        cd.cd_marital_status,
        COALESCE(hd.hd_buy_potential, 'Unknown') AS buy_potential
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        household_demographics hd ON c.c_current_hdemo_sk = hd.hd_demo_sk
), detailed_info AS (
    SELECT 
        ci.c_customer_id,
        ci.cd_gender,
        ci.cd_marital_status,
        ci.buy_potential,
        ts.total_sales,
        ts.total_discount,
        ts.total_orders
    FROM 
        customer_info ci
    JOIN 
        web_sales ws ON ci.c_customer_id = ws.ws_bill_customer_sk
    JOIN 
        top_sales ts ON ws.ws_web_site_sk = ts.web_site_id
)
SELECT 
    di.c_customer_id,
    di.cd_gender,
    di.cd_marital_status,
    di.buy_potential,
    di.total_sales,
    di.total_discount,
    di.total_orders,
    CASE 
        WHEN di.total_sales > 1000 THEN 'High Value'
        WHEN di.total_sales BETWEEN 500 AND 1000 THEN 'Medium Value'
        ELSE 'Low Value'
    END AS customer_value_segment,
    STRING_AGG(DISTINCT CONCAT(CAST(di.cd_gender AS VARCHAR), ' ', CAST(di.cd_marital_status AS VARCHAR), ' ', CAST(di.buy_potential AS VARCHAR))) OVER (PARTITION BY di.c_customer_id) AS customer_profile
FROM 
    detailed_info di
ORDER BY 
    di.total_sales DESC, 
    di.c_customer_id;
