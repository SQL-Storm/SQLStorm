
WITH AddressDetails AS (
    SELECT 
        ca_address_id,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip
    FROM customer_address
),
CustomerInfo AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        d.cd_gender,
        d.cd_marital_status,
        d.cd_education_status,
        d.cd_credit_rating,
        d.cd_purchase_estimate,
        d.cd_dep_count
    FROM customer c
    JOIN customer_demographics d ON c.c_current_cdemo_sk = d.cd_demo_sk
),
DailySales AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_sales_price) AS total_sales,
        COUNT(ws_order_number) AS order_count,
        MAX(ws_net_profit) AS max_profit
    FROM web_sales
    GROUP BY ws_bill_customer_sk
)
SELECT 
    ci.full_name,
    ci.cd_gender,
    ci.cd_marital_status,
    ci.cd_education_status,
    ci.cd_credit_rating,
    ci.cd_purchase_estimate,
    ci.cd_dep_count,
    ad.full_address,
    ad.ca_city,
    ad.ca_state,
    ad.ca_zip,
    COALESCE(ds.total_sales, 0) AS total_sales,
    COALESCE(ds.order_count, 0) AS order_count,
    COALESCE(ds.max_profit, 0) AS max_profit
FROM CustomerInfo ci
LEFT JOIN AddressDetails ad ON ci.c_customer_id = ad.ca_address_id
LEFT JOIN DailySales ds ON ci.c_customer_id = ds.ws_bill_customer_sk
WHERE ad.ca_state = 'NY' AND COALESCE(ds.total_sales, 0) > 500
ORDER BY ds.total_sales DESC, ci.full_name;
