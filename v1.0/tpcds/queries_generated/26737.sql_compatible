
WITH Address_Concatenation AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type, 
            CASE 
                WHEN ca_suite_number IS NOT NULL THEN CONCAT(' Suite ', ca_suite_number) 
                ELSE '' 
            END) AS full_address,
        ca_city, 
        ca_state,
        ca_zip,
        ca_country
    FROM 
        customer_address
),
Customer_Processing AS (
    SELECT 
        c_customer_sk,
        CONCAT(c_first_name, ' ', c_last_name) AS full_name,
        cd_gender,
        cd_marital_status,
        cd_email_address,
        cd_credit_rating,
        cd_dep_count
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
Sales_Analytics AS (
    SELECT 
        w.web_site_id,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws_order_number) AS total_orders
    FROM 
        web_sales ws
    JOIN 
        web_site w ON ws.ws_web_site_sk = w.web_site_sk
    GROUP BY 
        w.web_site_id
)

SELECT 
    ca.full_address,
    cp.full_name,
    cp.cd_gender,
    cp.cd_marital_status,
    cp.cd_email_address,
    cp.cd_credit_rating,
    cp.cd_dep_count,
    sa.web_site_id,
    sa.total_sales,
    sa.total_orders
FROM 
    Address_Concatenation ca
JOIN 
    Customer_Processing cp ON cp.c_customer_sk = (
        SELECT c_customer_sk 
        FROM store_sales ss 
        WHERE ss.ss_item_sk IN (SELECT DISTINCT ws_item_sk FROM web_sales ws) 
        LIMIT 1
    )
JOIN 
    Sales_Analytics sa ON sa.total_sales > 50000
WHERE 
    ca.ca_city = 'San Francisco'
    AND ca.ca_state = 'CA'
ORDER BY 
    sa.total_sales DESC;
