
WITH RankedSales AS (
    SELECT 
        ws.ws_item_sk,
        ws.ws_order_number,
        ws.ws_quantity,
        ws.ws_ext_sales_price,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_ext_sales_price DESC) AS rn
    FROM 
        web_sales ws
    WHERE 
        ws.ws_net_profit > 0
),
TotalSales AS (
    SELECT 
        sr_items.ws_item_sk,
        SUM(sr_items.ws_ext_sales_price) AS total_sales,
        COUNT(sr_items.ws_order_number) AS order_count
    FROM
        RankedSales sr_items
    GROUP BY 
        sr_items.ws_item_sk
),
HighValueCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        SUM(ws.ws_net_paid) AS total_spent
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        c.c_birth_country IS NOT NULL
    GROUP BY 
        c.c_customer_sk, c.c_first_name
    HAVING
        SUM(ws.ws_net_paid) > (SELECT AVG(total_spent) FROM (
            SELECT SUM(ws.net_paid) AS total_spent
            FROM web_sales ws
            GROUP BY ws.ws_bill_customer_sk
        ) AS avg_spending)
),
CustomerAddress AS (
    SELECT 
        ca.ca_city,
        ca.ca_state,
        COUNT(DISTINCT c.c_customer_sk) AS customer_count
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    GROUP BY 
        ca.ca_city, ca.ca_state
    HAVING 
        COUNT(DISTINCT c.c_customer_sk) > 5
)
SELECT 
    ca.ca_city,
    ca.ca_state,
    TotalSales.total_sales,
    COALESCE(HighValueCustomers.total_spent, 0) AS high_value_spenders
FROM 
    CustomerAddress ca
LEFT JOIN 
    TotalSales ON ca.ca_city = CAST(TotalSales.ws_item_sk AS VARCHAR)
LEFT JOIN 
    HighValueCustomers ON HighValueCustomers.c_customer_sk IN (
        SELECT c.c_customer_sk
        FROM customer c
        JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
        WHERE ws.ws_item_sk IN (SELECT ws_item_sk FROM RankedSales WHERE rn = 1)
    )
WHERE 
    TotalSales.total_sales IS NOT NULL OR HighValueCustomers.total_spent IS NOT NULL
ORDER BY 
    ca.ca_state, ca.ca_city;
