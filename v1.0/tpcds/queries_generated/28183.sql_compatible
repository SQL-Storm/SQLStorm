
WITH AddressDetails AS (
    SELECT 
        ca_address_sk,
        TRIM(CONCAT_WS(' ', ca_street_number, ca_suite_number, ca_street_name, ca_street_type)) AS full_address,
        ca_city,
        ca_state,
        ca_zip,
        ca_country
    FROM 
        customer_address
),
CustomerWithAddress AS (
    SELECT 
        c.c_customer_sk,
        TRIM(CONCAT(c.c_first_name, ' ', c.c_last_name)) AS customer_name,
        cad.full_address,
        cad.ca_city,
        cad.ca_state,
        cad.ca_zip,
        cad.ca_country,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        AddressDetails cad ON c.c_current_addr_sk = cad.ca_address_sk
),
SalesData AS (
    SELECT 
        ws.ws_ship_date_sk,
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_sales,
        SUM(ws.ws_sales_price * ws.ws_quantity) AS total_revenue
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_ship_date_sk, ws.ws_item_sk
)
SELECT 
    cwa.customer_name,
    cwa.ca_city,
    cwa.ca_state,
    cwa.ca_zip,
    cwa.ca_country,
    sd.total_sales,
    sd.total_revenue,
    FORMAT(dd.d_date, 'yyyy-MM-dd') AS sale_date
FROM 
    CustomerWithAddress cwa
LEFT JOIN 
    SalesData sd ON cwa.c_customer_sk = sd.ws_item_sk
JOIN 
    date_dim dd ON sd.ws_ship_date_sk = dd.d_date_sk
WHERE 
    cwa.ca_state = 'NY' AND 
    sd.total_sales > 0
ORDER BY 
    sd.total_revenue DESC
FETCH FIRST 100 ROWS ONLY;
