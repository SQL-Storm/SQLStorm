
WITH CustomerDetails AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
SalesData AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_sales_price,
        ws.ws_quantity,
        cs.cs_sales_price AS catalog_sales_price,
        cs.cs_quantity AS catalog_quantity,
        ss.ss_sales_price AS store_sales_price,
        ss.ss_quantity AS store_quantity
    FROM 
        web_sales ws
    LEFT JOIN 
        catalog_sales cs ON ws.ws_order_number = cs.cs_order_number
    LEFT JOIN 
        store_sales ss ON ws.ws_order_number = ss.ss_ticket_number
),
BenchmarkResults AS (
    SELECT 
        cd.c_customer_id,
        CONCAT(cd.c_first_name, ' ', cd.c_last_name) AS full_name,
        SUM(sd.ws_sales_price) AS total_web_sales,
        SUM(sd.catalog_sales_price) AS total_catalog_sales,
        SUM(sd.store_sales_price) AS total_store_sales,
        SUM(sd.ws_quantity) AS total_web_quantity,
        SUM(sd.catalog_quantity) AS total_catalog_quantity,
        SUM(sd.store_quantity) AS total_store_quantity
    FROM 
        CustomerDetails cd
    LEFT JOIN 
        SalesData sd ON cd.c_customer_id = sd.ws_order_number 
    GROUP BY 
        cd.c_customer_id, cd.c_first_name, cd.c_last_name
)
SELECT 
    full_name,
    total_web_sales,
    total_catalog_sales,
    total_store_sales,
    total_web_quantity,
    total_catalog_quantity,
    total_store_quantity,
    CASE 
        WHEN total_web_sales > total_catalog_sales AND total_web_sales > total_store_sales THEN 'Web Sales Leading'
        WHEN total_catalog_sales > total_web_sales AND total_catalog_sales > total_store_sales THEN 'Catalog Sales Leading'
        WHEN total_store_sales > total_web_sales AND total_store_sales > total_catalog_sales THEN 'Store Sales Leading'
        ELSE 'Sales Tied' 
    END AS leading_sales_channel
FROM 
    BenchmarkResults
ORDER BY 
    total_web_sales DESC, total_catalog_sales DESC, total_store_sales DESC
FETCH FIRST 100 ROWS ONLY;
