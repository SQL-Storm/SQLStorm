
WITH RECURSIVE income_range AS (
    SELECT ib_income_band_sk, ib_lower_bound, ib_upper_bound
    FROM income_band
    WHERE ib_income_band_sk = (SELECT MIN(ib_income_band_sk) FROM income_band)
    UNION ALL
    SELECT ib.ib_income_band_sk, ib.ib_lower_bound, ib.ib_upper_bound
    FROM income_band ib
    JOIN income_range ir ON ib.ib_income_band_sk = ir.ib_income_band_sk + 1
),
high_spenders AS (
    SELECT cd.cd_demo_sk, cd.cd_gender, cd.cd_marital_status, SUM(ws.ws_net_paid) AS total_spent
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE ws.ws_sold_date_sk BETWEEN (SELECT MIN(d_date_sk) FROM date_dim) AND (SELECT MAX(d_date_sk) FROM date_dim)
    GROUP BY cd.cd_demo_sk, cd.cd_gender, cd.cd_marital_status
    HAVING SUM(ws.ws_net_paid) > (SELECT AVG(total_spent) FROM (
        SELECT SUM(ws.net_paid) AS total_spent
        FROM web_sales ws
        GROUP BY ws.ws_bill_customer_sk) AS avg_totals)
),
customer_info AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        ir.ib_lower_bound,
        ir.ib_upper_bound
    FROM customer c
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN income_band ib ON cd.cd_purchase_estimate BETWEEN ib.ib_lower_bound AND ib.ib_upper_bound
    JOIN income_range ir ON ir.ib_income_band_sk = ib.ib_income_band_sk
    WHERE c.c_customer_sk IN (SELECT cs.cs_bill_customer_sk FROM store_sales cs WHERE cs.ss_sold_date_sk > 1000)
)
SELECT ci.*, hs.total_spent
FROM customer_info ci
LEFT JOIN high_spenders hs ON ci.c_customer_id = hs.cd_demo_sk
ORDER BY ci.ca_city, ci.ca_state DESC, hs.total_spent DESC NULLS LAST;
