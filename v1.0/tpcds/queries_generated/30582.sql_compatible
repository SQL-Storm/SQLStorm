
WITH RECURSIVE sales_hierarchy AS (
    SELECT 
        c.c_customer_sk AS customer_id,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_profit) AS total_profit
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        ws.ws_sold_date_sk = (SELECT MAX(d_date_sk) FROM date_dim WHERE d_date = DATE '2002-10-01')
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
    HAVING 
        SUM(ws.ws_net_profit) > 1000
    UNION ALL
    SELECT 
        ch.customer_id,
        ch.c_first_name,
        ch.c_last_name,
        SUM(ws.ws_net_profit) AS total_profit
    FROM 
        sales_hierarchy ch
    JOIN 
        web_sales ws ON ws.ws_bill_customer_sk = ch.customer_id
    WHERE 
        ws.ws_sold_date_sk = (SELECT MAX(d_date_sk) FROM date_dim WHERE d_date < DATE '2002-10-01')
    GROUP BY 
        ch.customer_id, ch.c_first_name, ch.c_last_name
),
customer_ranking AS (
    SELECT 
        customer_id, 
        c_first_name, 
        c_last_name, 
        total_profit,
        RANK() OVER (ORDER BY total_profit DESC) AS profit_rank
    FROM 
        sales_hierarchy
),
summary AS (
    SELECT 
        c.c_current_addr_sk,
        ca.ca_city,
        ca.ca_state,
        SUM(cs.cs_net_profit) AS total_store_profit,
        COUNT(DISTINCT cs.cs_order_number) AS total_orders,
        COUNT(DISTINCT cs.cs_item_sk) AS total_items_sold
    FROM 
        customer c
    LEFT JOIN 
        store_sales cs ON c.c_customer_sk = cs.ss_customer_sk
    LEFT JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    WHERE 
        ca.ca_state IN ('NY', 'CA')
    GROUP BY 
        c.c_current_addr_sk, ca.ca_city, ca.ca_state
)
SELECT 
    cr.customer_id,
    cr.c_first_name,
    cr.c_last_name,
    sr.total_store_profit,
    sr.total_orders,
    sr.total_items_sold
FROM 
    customer_ranking cr
JOIN 
    summary sr ON cr.customer_id = sr.c_current_addr_sk
WHERE 
    sr.total_store_profit IS NOT NULL
ORDER BY 
    cr.profit_rank, sr.total_store_profit DESC
LIMIT 100;
