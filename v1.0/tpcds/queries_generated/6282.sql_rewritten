WITH ranked_customers AS (
    SELECT 
        c.c_customer_sk,
        c.c_customer_id,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating,
        cd.cd_dep_count,
        RANK() OVER (PARTITION BY cd.cd_gender ORDER BY cd.cd_purchase_estimate DESC) AS gender_rank
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
top_customers AS (
    SELECT 
        rc.c_customer_sk,
        rc.c_customer_id,
        SUM(ws.ws_net_profit) AS total_profit
    FROM 
        ranked_customers rc
    JOIN 
        web_sales ws ON rc.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        rc.gender_rank <= 10
    GROUP BY 
        rc.c_customer_sk, rc.c_customer_id
),
monthly_sales AS (
    SELECT 
        d.d_year,
        d.d_month_seq,
        SUM(ws.ws_net_sales) AS total_monthly_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY 
        d.d_year, d.d_month_seq
),
sales_analysis AS (
    SELECT 
        tc.c_customer_id,
        ms.total_monthly_sales,
        ms.total_orders,
        RANK() OVER (ORDER BY ms.total_monthly_sales DESC) AS sales_rank
    FROM 
        top_customers tc
    JOIN 
        monthly_sales ms ON tc.c_customer_id = ms.d_year 
)
SELECT 
    sales_rank,
    COUNT(c_customer_id) AS num_customers,
    AVG(total_monthly_sales) AS avg_sales,
    SUM(total_orders) AS total_orders
FROM 
    sales_analysis
GROUP BY 
    sales_rank
ORDER BY 
    sales_rank;