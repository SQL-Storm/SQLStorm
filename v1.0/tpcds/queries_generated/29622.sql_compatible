
WITH customer_info AS (
    SELECT
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country
    FROM
        customer c
    JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
date_info AS (
    SELECT
        d.d_date,
        d.d_month_seq,
        d.d_year,
        d.d_day_name
    FROM
        date_dim d
    WHERE
        d.d_year = 2023
),
sales_data AS (
    SELECT
        ws.ws_sold_date_sk,
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM
        web_sales ws
    GROUP BY
        ws.ws_sold_date_sk
),
benchmark AS (
    SELECT
        CAST(di.d_date AS DATE) AS sale_date,
        SUM(sd.total_sales) AS total_sales,
        SUM(sd.order_count) AS total_orders
    FROM
        date_info di
    LEFT JOIN
        sales_data sd ON di.d_date_sk = sd.ws_sold_date_sk
    GROUP BY
        di.d_date
)
SELECT
    ci.full_name,
    ci.cd_gender,
    ci.cd_marital_status,
    ci.cd_purchase_estimate,
    ci.cd_credit_rating,
    b.sale_date,
    COALESCE(b.total_sales, 0) AS daily_sales,
    COALESCE(b.total_orders, 0) AS order_quantity,
    COUNT(DISTINCT ci.c_customer_id) OVER (PARTITION BY b.sale_date) AS customer_count
FROM
    customer_info ci
LEFT JOIN
    benchmark b ON ci.c_customer_id IS NOT NULL
ORDER BY
    b.sale_date DESC, ci.full_name ASC;
