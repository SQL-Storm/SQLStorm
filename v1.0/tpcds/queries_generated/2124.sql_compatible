
WITH CustomerStats AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_gender ORDER BY cd.cd_purchase_estimate DESC) AS purchase_rank
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
TopCustomers AS (
    SELECT 
        cs.c_customer_sk,
        cs.c_first_name,
        cs.c_last_name,
        cs.cd_gender,
        cs.cd_marital_status,
        cs.cd_purchase_estimate
    FROM 
        CustomerStats cs
    WHERE 
        cs.purchase_rank <= 10
),
SalesData AS (
    SELECT 
        ws.ws_customer_sk,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS order_count
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_customer_sk
),
ReturnAnalysis AS (
    SELECT 
        sr.sr_customer_sk,
        COUNT(sr.sr_ticket_number) AS total_returns,
        SUM(sr.sr_return_amt_inc_tax) AS total_return_amt
    FROM 
        store_returns sr
    GROUP BY 
        sr.sr_customer_sk
),
CustomerPerformance AS (
    SELECT 
        tc.c_customer_sk,
        tc.c_first_name,
        tc.c_last_name,
        COALESCE(sd.total_sales, 0) AS total_sales,
        COALESCE(sd.order_count, 0) AS order_count,
        COALESCE(ra.total_returns, 0) AS total_returns,
        COALESCE(ra.total_return_amt, 0) AS total_return_amt,
        CASE 
            WHEN COALESCE(sd.total_sales, 0) > 0 THEN 
                ROUND(COALESCE(ra.total_return_amt, 0) * 100.0 / COALESCE(sd.total_sales, 0), 2)
            ELSE 
                0 
        END AS return_rate
    FROM 
        TopCustomers tc
    LEFT JOIN 
        SalesData sd ON tc.c_customer_sk = sd.ws_customer_sk
    LEFT JOIN 
        ReturnAnalysis ra ON tc.c_customer_sk = ra.sr_customer_sk
)
SELECT 
    c.c_customer_sk,
    c.c_first_name,
    c.c_last_name,
    cs.cd_gender,
    cp.total_sales,
    cp.order_count,
    cp.total_returns,
    cp.total_return_amt,
    cp.return_rate
FROM 
    CustomerPerformance cp
JOIN 
    customer c ON cp.c_customer_sk = c.c_customer_sk
JOIN 
    customer_demographics cs ON c.c_current_cdemo_sk = cs.cd_demo_sk
ORDER BY 
    cp.return_rate DESC;
