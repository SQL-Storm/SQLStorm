
WITH RECURSIVE Sales_CTE AS (
    SELECT 
        ws_item_sk,
        ws_order_number,
        ws_sales_price,
        ws_quantity,
        ws_net_profit,
        ws_sold_date_sk,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY ws_sold_date_sk DESC) AS rn
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk BETWEEN 2458855 AND 2458890
),
Aggregate_Sales AS (
    SELECT 
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_net_profit) AS total_net_profit
    FROM 
        Sales_CTE
    WHERE 
        rn <= 10
    GROUP BY 
        ws_item_sk
),
Customer_Stats AS (
    SELECT 
        c_customer_sk,
        AVG(cd_purchase_estimate) AS avg_purchase_estimate,
        SUM(CASE WHEN c_preferred_cust_flag = 'Y' THEN 1 ELSE 0 END) AS preferred_count
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        c_customer_sk
)
SELECT 
    a.ws_item_sk,
    a.total_quantity,
    a.total_net_profit,
    c.avg_purchase_estimate,
    c.preferred_count,
    d.d_year,
    RANK() OVER (ORDER BY a.total_net_profit DESC) AS profit_rank
FROM 
    Aggregate_Sales a
LEFT JOIN 
    Customer_Stats c ON a.ws_item_sk = c.c_customer_sk
JOIN 
    date_dim d ON d.d_date_sk = a.ws_sold_date_sk
WHERE 
    (c.avg_purchase_estimate IS NOT NULL OR c.preferred_count > 0)
    AND d.d_year = 2022
ORDER BY 
    profit_rank;
