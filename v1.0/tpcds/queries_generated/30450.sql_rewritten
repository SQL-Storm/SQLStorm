WITH RECURSIVE customer_hierarchy AS (
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, c.c_current_cdemo_sk, 0 AS level
    FROM customer c
    WHERE c.c_current_cdemo_sk IS NOT NULL
    UNION ALL
    SELECT ch.c_customer_sk, ch.c_first_name, ch.c_last_name, ch.c_current_cdemo_sk, ch.level + 1
    FROM customer_hierarchy ch
    JOIN customer c ON ch.c_current_cdemo_sk = c.c_current_cdemo_sk
),
top_customers AS (
    SELECT cd.cd_gender, cd.cd_marital_status, COUNT(c.c_customer_sk) AS customer_count
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY cd.cd_gender, cd.cd_marital_status
    HAVING COUNT(c.c_customer_sk) > 10
),
sales_data AS (
    SELECT ws.ws_sold_date_sk, SUM(ws.ws_net_paid) AS total_sales, COUNT(ws.ws_order_number) AS order_count
    FROM web_sales ws
    GROUP BY ws.ws_sold_date_sk
),
store_sales_data AS (
    SELECT ss.ss_sold_date_sk, SUM(ss.ss_net_paid) AS store_total_sales, COUNT(ss.ss_ticket_number) AS store_order_count
    FROM store_sales ss
    GROUP BY ss.ss_sold_date_sk
)
SELECT 
    a.ca_city,
    COUNT(DISTINCT c.c_customer_sk) AS total_customers,
    COALESCE(SUM(sd.total_sales), 0) AS total_web_sales,
    COALESCE(SUM(ssd.store_total_sales), 0) AS total_store_sales,
    SUM(CASE 
        WHEN cd.cd_marital_status = 'M' THEN 1 
        ELSE 0 
        END) AS married_customers,
    ROW_NUMBER() OVER (PARTITION BY a.ca_city ORDER BY COUNT(DISTINCT c.c_customer_sk) DESC) AS city_rank
FROM customer c
LEFT JOIN customer_address a ON c.c_current_addr_sk = a.ca_address_sk
LEFT JOIN top_customers tc ON tc.cd_gender = (
    CASE 
        WHEN cd.cd_gender = 'F' THEN 'Female'
        WHEN cd.cd_gender = 'M' THEN 'Male'
        ELSE 'Unknown'
    END
)
LEFT JOIN sales_data sd ON sd.ws_sold_date_sk = (
    SELECT MAX(d.d_date_sk) 
    FROM date_dim d 
    WHERE d.d_year = EXTRACT(YEAR FROM cast('2002-10-01' as date)) 
)
LEFT JOIN store_sales_data ssd ON ssd.ss_sold_date_sk = (
    SELECT MAX(d.d_date_sk) 
    FROM date_dim d 
    WHERE d.d_year = EXTRACT(YEAR FROM cast('2002-10-01' as date)) 
)
JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
WHERE a.ca_city IS NOT NULL
GROUP BY a.ca_city
ORDER BY total_customers DESC;