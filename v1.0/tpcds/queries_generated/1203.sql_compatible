
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        c.c_birth_year,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(ws.ws_order_number) AS order_count
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id, c.c_birth_year
),
IncomeLevels AS (
    SELECT 
        hd.hd_income_band_sk,
        COUNT(hd.hd_demo_sk) AS demographic_count
    FROM 
        household_demographics hd
    GROUP BY 
        hd.hd_income_band_sk
),
Promotions AS (
    SELECT 
        p.p_promo_id,
        SUM(ws.ws_ext_discount_amt) AS total_discount
    FROM 
        promotion p
    JOIN 
        web_sales ws ON p.p_promo_sk = ws.ws_promo_sk
    GROUP BY 
        p.p_promo_id
    HAVING 
        SUM(ws.ws_ext_discount_amt) > 100
),
RankedSales AS (
    SELECT 
        c.c_customer_id,
        cs.total_profit,
        RANK() OVER (PARTITION BY c.c_birth_year ORDER BY cs.total_profit DESC) AS profit_rank
    FROM 
        CustomerSales cs
    JOIN 
        customer c ON c.c_customer_id = cs.c_customer_id
)
SELECT 
    r.c_customer_id AS customer_id,
    r.total_profit,
    r.profit_rank,
    il.demographic_count,
    p.total_discount
FROM 
    RankedSales r
LEFT JOIN 
    IncomeLevels il ON r.c_customer_id = il.hd_income_band_sk
LEFT JOIN 
    Promotions p ON r.c_customer_id = p.p_promo_id
WHERE 
    r.profit_rank <= 10
    AND r.total_profit IS NOT NULL
ORDER BY 
    r.total_profit DESC;
