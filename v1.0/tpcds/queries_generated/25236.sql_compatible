
WITH CustomerDetails AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
), 
Promotions AS (
    SELECT 
        p.p_promo_sk,
        p.p_promo_name,
        p.p_cost,
        wp.wp_url AS promotion_url
    FROM 
        promotion p
    JOIN 
        web_page wp ON p.p_promo_sk = wp.wp_web_page_sk 
), 
SalesData AS (
    SELECT 
        ws.ws_sold_date_sk,
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_sales_quantity,
        SUM(ws.ws_ext_sales_price) AS total_sales_value
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_sold_date_sk, ws.ws_item_sk
), 
DetailedSales AS (
    SELECT 
        sd.ws_sold_date_sk,
        sd.ws_item_sk,
        cd.c_customer_sk,
        cs.total_sales_quantity,
        cs.total_sales_value,
        p.p_promo_name
    FROM 
        SalesData cs
    JOIN 
        CustomerDetails cd ON cs.ws_item_sk = cd.c_customer_sk
    LEFT JOIN 
        Promotions p ON cs.ws_item_sk = p.p_promo_sk
)
SELECT
    d.d_date AS sale_date,
    cd.full_name,
    cd.ca_city,
    cd.ca_state,
    ds.total_sales_quantity,
    ds.total_sales_value,
    ds.p_promo_name
FROM 
    DetailedSales ds
JOIN 
    date_dim d ON ds.ws_sold_date_sk = d.d_date_sk
JOIN 
    CustomerDetails cd ON ds.c_customer_sk = cd.c_customer_sk
WHERE 
    d.d_year = 2023 AND 
    (cd.ca_city LIKE '%New%' OR cd.ca_state = 'CA')
ORDER BY 
    d.d_date, cd.full_name;
