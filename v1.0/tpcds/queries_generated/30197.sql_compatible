
WITH RECURSIVE SalesHierarchy AS (
    SELECT 
        ws_bill_customer_sk,
        ws_order_number,
        ws_quantity,
        ws_net_paid,
        ws_net_profit,
        CAST(1 AS INTEGER) AS level
    FROM 
        web_sales 
    WHERE 
        ws_sold_date_sk = (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2023)
    
    UNION ALL
    
    SELECT 
        ws.bill_customer_sk,
        ws.order_number,
        ws.quantity,
        ws.net_paid,
        ws.net_profit,
        h.level + 1
    FROM 
        SalesHierarchy h
    JOIN 
        web_sales ws ON h.ws_bill_customer_sk = ws.ws_bill_customer_sk AND h.ws_order_number = ws.ws_order_number
    WHERE 
        h.level < 5
),
CustomerInfo AS (
    SELECT 
        c.c_customer_id,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        SUM(sh.ws_net_profit) AS total_profit
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        SalesHierarchy sh ON c.c_customer_sk = sh.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate
),
FilteredCustomers AS (
    SELECT 
        ci.c_customer_id,
        ci.cd_gender,
        ci.cd_marital_status,
        ci.cd_purchase_estimate,
        ci.total_profit,
        RANK() OVER (PARTITION BY ci.cd_gender ORDER BY ci.total_profit DESC) AS rank
    FROM 
        CustomerInfo ci
    WHERE 
        ci.total_profit > 10000
),
TopCustomers AS (
    SELECT 
        fc.c_customer_id,
        fc.cd_gender,
        fc.cd_marital_status,
        fc.cd_purchase_estimate,
        fc.total_profit
    FROM 
        FilteredCustomers fc
    WHERE 
        fc.rank <= 10
)
SELECT 
    tc.c_customer_id,
    tc.cd_gender,
    tc.cd_marital_status,
    tc.cd_purchase_estimate,
    tc.total_profit,
    COALESCE((SELECT COUNT(*) FROM web_page wp WHERE wp.wp_customer_sk = tc.c_customer_id), 0) AS web_page_views,
    COALESCE((SELECT AVG(ws.ws_net_paid) FROM web_sales ws WHERE ws.ws_bill_customer_sk = tc.c_customer_id), 0) AS avg_purchase,
    CASE 
        WHEN tc.cd_marital_status = 'S' THEN 'Single'
        WHEN tc.cd_marital_status = 'M' THEN 'Married'
        ELSE 'Other'
    END AS marital_status_desc
FROM 
    TopCustomers tc
ORDER BY 
    tc.total_profit DESC;
