
WITH ranked_sales AS (
    SELECT
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_net_profit) AS total_net_profit,
        DENSE_RANK() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_net_profit) DESC) AS rank
    FROM
        web_sales
    GROUP BY
        ws_item_sk
),
high_value_customers AS (
    SELECT
        c_customer_sk,
        cd_gender,
        SUM(ws_net_paid) AS total_spent,
        COUNT(DISTINCT ws_order_number) AS order_count
    FROM
        customer c
    JOIN
        web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE
        ws_net_paid IS NOT NULL
    GROUP BY
        c_customer_sk, cd_gender
    HAVING
        SUM(ws_net_paid) > (SELECT AVG(total_spent) FROM (
            SELECT
                SUM(ws_net_paid) AS total_spent
            FROM
                web_sales
            GROUP BY
                ws_bill_customer_sk
        ) AS avg_customers)
)
SELECT
    ca.ca_address_id,
    ca.ca_city,
    CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
    rc.total_quantity,
    rc.total_net_profit,
    cdc.total_spent AS customer_value,
    STRING_AGG(DISTINCT i.i_product_name, ', ') AS products_sold,
    COALESCE(sm.sm_carrier, 'Unknown') AS shipping_carrier
FROM
    customer_address ca
JOIN
    customer c ON ca.ca_address_sk = c.c_current_addr_sk
JOIN
    high_value_customers cdc ON c.c_customer_sk = cdc.c_customer_sk
LEFT JOIN
    ranked_sales rc ON rc.ws_item_sk IN (
        SELECT
            ws_item_sk
        FROM
            web_sales
        WHERE
            ws_bill_customer_sk = c.c_customer_sk
        ORDER BY
            ws_net_profit DESC
        LIMIT 5
    )
LEFT JOIN
    ship_mode sm ON rc.ws_item_sk = sm.sm_ship_mode_sk
JOIN 
    (
        SELECT DISTINCT
            ws_item_sk,
            COUNT(DISTINCT ws_order_number) AS order_count,
            STRING_AGG(CAST(ws_net_paid AS VARCHAR), ', ' ORDER BY ws_order_number) AS payment_details
        FROM
            web_sales
        GROUP BY
            ws_item_sk
        HAVING
            COUNT(DISTINCT ws_order_number) > 1
    ) ws_details ON rc.ws_item_sk = ws_details.ws_item_sk
GROUP BY
    ca.ca_address_id,
    ca.ca_city,
    c.c_first_name,
    c.c_last_name,
    rc.total_quantity,
    rc.total_net_profit,
    cdc.total_spent,
    sm.sm_carrier
HAVING
    SUM(rc.total_net_profit) IS NOT NULL
ORDER BY
    customer_value DESC
FETCH FIRST 10 ROWS ONLY;
