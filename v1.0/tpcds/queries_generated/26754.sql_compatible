
WITH CustomerInfo AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
AddressInfo AS (
    SELECT 
        ca.ca_address_id,
        CONCAT(ca.ca_street_number, ' ', ca.ca_street_name, ' ', ca.ca_street_type) AS full_address,
        ca.ca_city,
        ca.ca_state
    FROM 
        customer_address ca
),
SalesInfo AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_ship_date_sk,
        ws.ws_quantity,
        ws.ws_sales_price,
        ws.ws_net_profit
    FROM 
        web_sales ws
    WHERE 
        ws.ws_sold_date_sk BETWEEN 20220101 AND 20221231
)
SELECT 
    ci.full_name,
    ci.cd_gender,
    ci.cd_marital_status,
    ai.full_address,
    SUM(si.ws_quantity) AS total_quantity,
    SUM(si.ws_sales_price) AS total_sales,
    SUM(si.ws_net_profit) AS total_profit
FROM 
    CustomerInfo ci
JOIN 
    AddressInfo ai ON ci.c_customer_id = ai.ca_address_id
JOIN 
    SalesInfo si ON ci.c_customer_id = si.ws_order_number
GROUP BY 
    ci.full_name, ci.cd_gender, ci.cd_marital_status, ai.full_address
HAVING 
    SUM(si.ws_net_profit) > 1000
ORDER BY 
    total_sales DESC;
