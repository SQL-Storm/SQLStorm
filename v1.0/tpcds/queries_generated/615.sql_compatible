
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_ext_sales_price) AS total_web_sales,
        SUM(cs.cs_ext_sales_price) AS total_catalog_sales,
        SUM(ss.ss_ext_sales_price) AS total_store_sales,
        DENSE_RANK() OVER (PARTITION BY c.c_customer_id ORDER BY SUM(ws.ws_ext_sales_price) DESC) AS web_sales_rank,
        DENSE_RANK() OVER (PARTITION BY c.c_customer_id ORDER BY SUM(cs.cs_ext_sales_price) DESC) AS catalog_sales_rank,
        DENSE_RANK() OVER (PARTITION BY c.c_customer_id ORDER BY SUM(ss.ss_ext_sales_price) DESC) AS store_sales_rank
    FROM 
        customer c
    LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN catalog_sales cs ON c.c_customer_sk = cs.cs_bill_customer_sk
    LEFT JOIN store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY 
        c.c_customer_id, 
        c.c_first_name, 
        c.c_last_name
),
CustomerDetails AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating
    FROM 
        customer_demographics cd
)
SELECT 
    cs.c_customer_id,
    cs.c_first_name,
    cs.c_last_name,
    COALESCE(cs.total_web_sales, 0) AS web_sales,
    COALESCE(cs.total_catalog_sales, 0) AS catalog_sales,
    COALESCE(cs.total_store_sales, 0) AS store_sales,
    CASE 
        WHEN cs.web_sales_rank = 1 THEN 'Top Web Sales'
        WHEN cs.catalog_sales_rank = 1 THEN 'Top Catalog Sales'
        WHEN cs.store_sales_rank = 1 THEN 'Top Store Sales'
        ELSE 'Regular Customer'
    END AS customer_status,
    CASE 
        WHEN cd.cd_gender = 'M' THEN 'Male'
        WHEN cd.cd_gender = 'F' THEN 'Female'
        ELSE 'Unknown'
    END AS gender,
    CASE 
        WHEN cd.cd_marital_status = 'M' THEN 'Married'
        WHEN cd.cd_marital_status = 'S' THEN 'Single'
        ELSE 'Other'
    END AS marital_status
FROM 
    CustomerSales cs
LEFT JOIN CustomerDetails cd ON cs.c_customer_id = cd.cd_demo_sk
WHERE 
    COALESCE(cs.total_web_sales, 0) > 1000 
    OR COALESCE(cs.total_catalog_sales, 0) > 1000 
    OR COALESCE(cs.total_store_sales, 0) > 1000
ORDER BY 
    web_sales DESC, 
    catalog_sales DESC, 
    store_sales DESC;
