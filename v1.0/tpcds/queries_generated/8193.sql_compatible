
WITH sales_summary AS (
    SELECT 
        ws.ship_mode_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        SUM(ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws_order_number) AS total_orders
    FROM 
        web_sales ws
    INNER JOIN 
        ship_mode sm ON ws.ship_mode_sk = sm.sm_ship_mode_sk
    WHERE 
        ws_sold_date_sk BETWEEN 2451545 AND 2451546 
    GROUP BY 
        ws.ship_mode_sk
), 
customer_details AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        COUNT(DISTINCT ws.bill_customer_sk) AS customer_count,
        SUM(ss.total_sales) AS sales_by_customer
    FROM 
        customer_demographics cd
    LEFT JOIN 
        web_sales ws ON cd.cd_demo_sk = ws.bill_cdemo_sk
    LEFT JOIN 
        sales_summary ss ON ws.ship_mode_sk = ss.ship_mode_sk
    GROUP BY 
        cd.cd_demo_sk, cd.cd_gender
), 
ranked_sales AS (
    SELECT 
        cd_gender, 
        customer_count, 
        sales_by_customer,
        DENSE_RANK() OVER (ORDER BY sales_by_customer DESC) AS sales_rank
    FROM 
        customer_details
)
SELECT 
    r.cd_gender,
    r.customer_count,
    r.sales_by_customer,
    r.sales_rank
FROM 
    ranked_sales r
WHERE 
    r.sales_rank <= 10
ORDER BY 
    r.sales_rank;
