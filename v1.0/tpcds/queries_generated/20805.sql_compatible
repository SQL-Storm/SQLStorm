
WITH RECURSIVE CustomerCTE AS (
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, 
           cd.cd_gender, cd.cd_marital_status, 
           COALESCE(SUM(ss.ss_net_profit), 0) AS total_net_profit
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY c.c_customer_sk, c.c_first_name, c.c_last_name, 
             cd.cd_gender, cd.cd_marital_status
    UNION ALL
    SELECT cte.c_customer_sk, cte.c_first_name, cte.c_last_name, 
           cd.cd_gender, cd.cd_marital_status, 
           cte.total_net_profit + COALESCE(SUM(ws.ws_net_profit), 0) 
    FROM CustomerCTE cte
    JOIN web_sales ws ON cte.c_customer_sk = ws.ws_bill_customer_sk
    JOIN customer c ON cte.c_customer_sk = c.c_customer_sk
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY cte.c_customer_sk, cte.c_first_name, cte.c_last_name, 
             cd.cd_gender, cd.cd_marital_status, cte.total_net_profit
    HAVING cte.total_net_profit + COALESCE(SUM(ws.ws_net_profit), 0) > 10000
),
HighestIncome AS (
    SELECT MAX(income_band.ib_upper_bound) AS max_income
    FROM household_demographics hd
    JOIN income_band ON hd.hd_income_band_sk = income_band.ib_income_band_sk
    WHERE hd.hd_buy_potential = 'High'
),
FinalResults AS (
    SELECT cte.c_customer_sk, cte.c_first_name, cte.c_last_name, 
           cte.cd_gender, cte.total_net_profit, 
           CASE 
               WHEN cte.total_net_profit > (SELECT max_income FROM HighestIncome) 
               THEN 'Top Spender' 
               ELSE 'Regular Spender' 
           END AS customer_type
    FROM CustomerCTE cte
)
SELECT *
FROM FinalResults
WHERE total_net_profit IS NOT NULL 
  AND (customer_type = 'Top Spender' OR total_net_profit BETWEEN 5000 AND 15000)
ORDER BY total_net_profit DESC
OFFSET 5 ROWS FETCH NEXT 10 ROWS ONLY;
