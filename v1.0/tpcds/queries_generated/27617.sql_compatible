
WITH processed_addresses AS (
    SELECT 
        ca_address_sk,
        TRIM(ca_street_number) || ' ' || TRIM(ca_street_name) || ' ' || TRIM(ca_street_type) || 
        CASE 
            WHEN ca_suite_number IS NOT NULL THEN ' Suite ' || TRIM(ca_suite_number) 
            ELSE '' 
        END AS full_address,
        LOWER(TRIM(ca_city)) AS city,
        UPPER(TRIM(ca_state)) AS state
    FROM 
        customer_address
),
customer_info AS (
    SELECT 
        c.c_customer_sk,
        TRIM(c.c_first_name) || ' ' || TRIM(c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        addr.full_address,
        addr.city,
        addr.state
    FROM 
        customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN processed_addresses addr ON c.c_current_addr_sk = addr.ca_address_sk
),
date_info AS (
    SELECT 
        d.d_date_sk,
        TO_CHAR(d.d_date, 'YYYY-MM-DD') AS formatted_date
    FROM 
        date_dim d
    WHERE 
        d.d_year >= 2020
),
sales_data AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_sales_price,
        ws.ws_quantity,
        ci.full_name,
        di.formatted_date
    FROM 
        web_sales ws
    JOIN customer_info ci ON ws.ws_bill_customer_sk = ci.c_customer_sk
    JOIN date_info di ON ws.ws_sold_date_sk = di.d_date_sk
)
SELECT 
    full_name,
    SUM(ws_sales_price) AS total_sales,
    SUM(ws_quantity) AS total_quantity,
    COUNT(DISTINCT ws_order_number) AS order_count,
    COUNT(DISTINCT formatted_date) AS unique_sale_days
FROM 
    sales_data
GROUP BY 
    full_name
ORDER BY 
    total_sales DESC
LIMIT 10;
