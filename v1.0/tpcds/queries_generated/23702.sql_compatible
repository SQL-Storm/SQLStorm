
WITH CTE_Sales AS (
    SELECT
        ws.web_site_id,
        ws.web_name,
        ws.ws_sales_price,
        ws.ws_ext_sales_price,
        wb.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        ROW_NUMBER() OVER (PARTITION BY ws.web_site_id ORDER BY ws.ws_sold_date_sk DESC) AS sales_rank
    FROM
        web_sales ws
    JOIN
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        warehouse w ON ws.ws_warehouse_sk = w.w_warehouse_sk
    WHERE
        cd.cd_marital_status = 'M' OR (cd.cd_marital_status IS NULL AND c.c_birth_year < 1980)
),
CTE_Returns AS (
    SELECT
        wr.wr_item_sk,
        COUNT(wr.wr_order_number) AS return_count,
        SUM(wr.wr_return_amt) AS total_returned,
        SUM(wr.wr_return_tax) AS total_return_tax
    FROM
        web_returns wr
    GROUP BY
        wr.wr_item_sk
),
CTE_Promotion AS (
    SELECT
        p.p_promo_id,
        COUNT(DISTINCT ws.ws_order_number) AS promo_sales_count,
        SUM(ws.ws_ext_discount_amt) AS total_discount
    FROM
        promotion p
    JOIN
        web_sales ws ON p.p_promo_sk = ws.ws_promo_sk
    GROUP BY
        p.p_promo_id
)
SELECT
    s.sales_rank,
    s.web_site_id,
    s.web_name,
    s.c_first_name,
    s.c_last_name,
    COALESCE(r.return_count, 0) AS return_count,
    COALESCE(r.total_returned, 0) AS total_returned,
    COALESCE(r.total_return_tax, 0) AS total_return_tax,
    COALESCE(p.promo_sales_count, 0) AS promo_sales_count,
    COALESCE(p.total_discount, 0) AS total_discount
FROM
    CTE_Sales s
LEFT JOIN
    CTE_Returns r ON s.ws_item_sk = r.wr_item_sk
FULL OUTER JOIN
    CTE_Promotion p ON s.web_site_id = p.p_promo_id
WHERE
    (s.sales_rank <= 10 OR COALESCE(r.return_count, 0) > 5 OR COALESCE(p.total_discount, 0) > 100)
ORDER BY
    s.web_site_id, s.sales_rank DESC;
