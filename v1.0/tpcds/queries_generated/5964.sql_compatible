
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_paid) AS total_web_sales,
        SUM(cs.cs_net_paid) AS total_catalog_sales,
        SUM(ss.ss_net_paid) AS total_store_sales
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        catalog_sales cs ON c.c_customer_sk = cs.cs_bill_customer_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    WHERE 
        c.c_birth_year BETWEEN 1980 AND 1990
    GROUP BY 
        c.c_customer_id
),
SalesByYear AS (
    SELECT 
        d.d_year,
        SUM(total_web_sales) AS web_sales_total,
        SUM(total_catalog_sales) AS catalog_sales_total,
        SUM(total_store_sales) AS store_sales_total
    FROM 
        CustomerSales cs
    JOIN 
        customer_demographics cd ON cs.c_customer_id = cd.cd_demo_sk
    JOIN 
        date_dim d ON d.d_date_sk = DATE '2002-10-01'
    GROUP BY 
        d.d_year
),
RankingSales AS (
    SELECT 
        d_year,
        web_sales_total,
        catalog_sales_total,
        store_sales_total,
        RANK() OVER (ORDER BY web_sales_total DESC) AS web_rank,
        RANK() OVER (ORDER BY catalog_sales_total DESC) AS catalog_rank,
        RANK() OVER (ORDER BY store_sales_total DESC) AS store_rank
    FROM 
        SalesByYear
)
SELECT 
    d_year,
    web_sales_total,
    catalog_sales_total,
    store_sales_total,
    web_rank,
    catalog_rank,
    store_rank
FROM 
    RankingSales
WHERE 
    web_rank <= 10 OR catalog_rank <= 10 OR store_rank <= 10
ORDER BY 
    d_year;
