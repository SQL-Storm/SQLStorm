
WITH CustomerLocation AS (
    SELECT 
        c.c_customer_id,
        ca.ca_city,
        ca.ca_state,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
PopularItems AS (
    SELECT 
        i.i_item_id,
        i.i_item_desc,
        COUNT(ws.ws_order_number) AS sales_count
    FROM 
        item i
    JOIN 
        web_sales ws ON i.i_item_sk = ws.ws_item_sk
    GROUP BY 
        i.i_item_id, i.i_item_desc
    ORDER BY 
        sales_count DESC
    LIMIT 10
),
CustomerPurchases AS (
    SELECT 
        cl.c_customer_id,
        cl.full_name,
        pi.i_item_id,
        pi.i_item_desc
    FROM 
        CustomerLocation cl
    JOIN 
        web_sales ws ON cl.c_customer_id = ws.ws_bill_customer_sk
    JOIN 
        PopularItems pi ON ws.ws_item_sk = pi.i_item_id
)
SELECT 
    cp.full_name,
    cp.i_item_id,
    cp.i_item_desc,
    cl.ca_city,
    cl.ca_state
FROM 
    CustomerPurchases cp
JOIN 
    CustomerLocation cl ON cp.c_customer_id = cl.c_customer_id
ORDER BY 
    cl.ca_state, cl.ca_city, cp.full_name;
