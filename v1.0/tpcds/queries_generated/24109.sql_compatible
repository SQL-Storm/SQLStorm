
WITH RECURSIVE top_customers AS (
    SELECT c.c_customer_sk, 
           SUM(ss.ss_net_paid) AS total_spent
    FROM customer c
    JOIN store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY c.c_customer_sk
    HAVING SUM(ss.ss_net_paid) IS NOT NULL
    ORDER BY total_spent DESC
    LIMIT 10
), 
customer_addresses AS (
    SELECT ca.ca_address_sk, 
           ca.ca_city, 
           ca.ca_state, 
           COUNT(DISTINCT c.c_customer_sk) AS customer_count
    FROM customer_address ca 
    LEFT JOIN customer c ON ca.ca_address_sk = c.c_current_addr_sk
    GROUP BY ca.ca_address_sk, ca.ca_city, ca.ca_state
), 
sales_data AS (
    SELECT ws.ws_sold_date_sk, 
           DATE(d.d_date) AS sale_date,
           sm.sm_carrier, 
           SUM(ws.ws_sales_price) AS total_sales
    FROM web_sales ws
    JOIN date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    LEFT JOIN ship_mode sm ON ws.ws_ship_mode_sk = sm.sm_ship_mode_sk
    WHERE d.d_current_month = '1' 
    GROUP BY ws.ws_sold_date_sk, d.d_date, sm.sm_carrier
)
SELECT 
    tc.c_customer_sk, 
    ca.ca_city, 
    ca.ca_state, 
    COALESCE(MAX(sd.total_sales), 0) AS total_sales_january,
    tc.total_spent,
    CASE 
        WHEN tc.total_spent > 5000 THEN 'High Value Customer'
        WHEN tc.total_spent BETWEEN 1000 AND 5000 THEN 'Medium Value Customer'
        ELSE 'Low Value Customer' 
    END AS customer_category,
    ROW_NUMBER() OVER (PARTITION BY ca.ca_state ORDER BY tc.total_spent DESC) AS customer_rank
FROM top_customers tc
LEFT JOIN customer_addresses ca ON tc.c_customer_sk = ca.customer_count
LEFT JOIN sales_data sd ON sd.sale_date = DATE_TRUNC('month', DATE '2002-10-01')
WHERE ca.ca_state IS NOT NULL 
    AND (ca.ca_city IS NOT NULL OR ca.ca_state = 'NY')
GROUP BY tc.c_customer_sk, ca.ca_city, ca.ca_state, tc.total_spent
ORDER BY total_sales_january DESC, total_spent DESC;
