
WITH TopCustomers AS (
    SELECT 
        c.c_customer_id,
        SUM(ss.ss_quantity) AS total_items_sold,
        SUM(ss.ss_net_paid) AS total_spent
    FROM 
        customer c
    JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    WHERE 
        ss.ss_sold_date_sk BETWEEN 1000 AND 2000
    GROUP BY 
        c.c_customer_id
    ORDER BY 
        total_spent DESC
    LIMIT 10
),
RankedReturns AS (
    SELECT 
        wr.wr_returning_customer_sk,
        COUNT(wr.wr_return_quantity) AS total_returns,
        SUM(wr.wr_return_amt) AS total_return_amount
    FROM 
        web_returns wr
    WHERE 
        wr.wr_returned_date_sk BETWEEN 1000 AND 2000
    GROUP BY 
        wr.wr_returning_customer_sk
),
ReturnAnalysis AS (
    SELECT 
        tc.c_customer_id,
        COALESCE(tr.total_returns, 0) AS total_returns,
        COALESCE(tr.total_return_amount, 0) AS total_return_amount,
        tc.total_items_sold,
        tc.total_spent
    FROM 
        TopCustomers tc
    LEFT JOIN 
        RankedReturns tr ON tc.c_customer_id = tr.wr_returning_customer_sk
)
SELECT 
    ra.c_customer_id,
    ra.total_items_sold,
    ra.total_spent,
    ra.total_returns,
    ra.total_return_amount,
    CASE 
        WHEN ra.total_spent > 1000 THEN 'High Value Customer'
        WHEN ra.total_spent BETWEEN 500 AND 1000 THEN 'Medium Value Customer'
        ELSE 'Low Value Customer'
    END AS customer_value_category
FROM 
    ReturnAnalysis ra
WHERE 
    ra.total_items_sold > 0
ORDER BY 
    ra.total_spent DESC;
