
WITH RECURSIVE sales_data AS (
    SELECT 
        ws_bill_customer_sk,
        ws_ship_date_sk,
        ws_quantity,
        ws_net_profit,
        ROW_NUMBER() OVER (PARTITION BY ws_bill_customer_sk ORDER BY ws_ship_date_sk) AS rn
    FROM web_sales
    WHERE ws_ship_date_sk >= (SELECT MAX(ws_ship_date_sk) FROM web_sales) - INTERVAL '30 days'
),
customer_summary AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        COALESCE(SUM(sd.ws_quantity), 0) AS total_quantity,
        COALESCE(SUM(sd.ws_net_profit), 0) AS total_net_profit,
        COUNT(DISTINCT sd.ws_ship_date_sk) AS purchase_days,
        RANK() OVER (ORDER BY COALESCE(SUM(sd.ws_net_profit), 0) DESC) AS profit_rank
    FROM customer c
    LEFT JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN sales_data sd ON c.c_customer_sk = sd.ws_bill_customer_sk
    GROUP BY c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status
),
top_customers AS (
    SELECT 
        cs.c_customer_sk,
        cs.c_first_name,
        cs.c_last_name,
        cs.total_quantity,
        cs.total_net_profit,
        cs.purchase_days,
        cs.profit_rank
    FROM customer_summary cs
    WHERE cs.profit_rank <= 10
)
SELECT 
    tc.c_customer_sk,
    tc.c_first_name,
    tc.c_last_name,
    ta.ca_city,
    ta.ca_state,
    ta.ca_country,
    COALESCE(i.inv_quantity_on_hand, 0) AS stock_on_hand,
    (SELECT COUNT(*) FROM web_returns wr WHERE wr.returning_customer_sk = tc.c_customer_sk) AS return_count
FROM top_customers tc
LEFT JOIN customer_address ta ON tc.c_customer_sk = ta.ca_address_sk
LEFT JOIN inventory i ON i.inv_date_sk = (SELECT MAX(inv_date_sk) FROM inventory) AND i.inv_item_sk IN (
    SELECT ws_item_sk FROM web_sales WHERE ws_bill_customer_sk = tc.c_customer_sk
)
ORDER BY tc.total_net_profit DESC, tc.total_quantity DESC;
