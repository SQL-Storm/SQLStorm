WITH RankedCustomers AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        ca.ca_city,
        ca.ca_state,
        ROW_NUMBER() OVER (PARTITION BY ca.ca_state ORDER BY c.c_birth_year ASC) AS state_rank
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    WHERE 
        c.c_birth_year BETWEEN 1970 AND 2000
),
CityAggregation AS (
    SELECT 
        ca_city,
        COUNT(c_customer_sk) AS customer_count,
        AVG(DATEDIFF(cast('2002-10-01' as date), CONCAT(c_birth_year, '-01-01'))) AS avg_age
    FROM 
        RankedCustomers
    GROUP BY 
        ca_city
)
SELECT 
    full_name,
    city_agg.ca_city,
    city_agg.customer_count,
    city_agg.avg_age,
    r.state_rank
FROM 
    RankedCustomers r
JOIN 
    CityAggregation city_agg ON r.ca_city = city_agg.ca_city
WHERE 
    r.state_rank <= 5
ORDER BY 
    city_agg.customer_count DESC, r.full_name;