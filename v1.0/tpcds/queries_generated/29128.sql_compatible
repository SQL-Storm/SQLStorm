
WITH AddressInfo AS (
    SELECT 
        ca_address_sk,
        TRIM(ca_street_number) || ' ' || TRIM(ca_street_name) || ' ' || TRIM(ca_street_type) || 
        CASE WHEN ca_suite_number IS NOT NULL THEN ' Suite ' || TRIM(ca_suite_number) ELSE '' END AS FullAddress,
        ca_city,
        ca_state,
        ca_zip,
        ca_country
    FROM 
        customer_address
), 
CustomerInfo AS (
    SELECT 
        TRIM(c_first_name) || ' ' || TRIM(c_last_name) AS CustomerName,
        cd_gender,
        cd_marital_status,
        cd.education_status,
        ci.ca_address_sk,
        c.c_customer_sk
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        AddressInfo ci ON c.c_current_addr_sk = ci.ca_address_sk
), 
SalesData AS (
    SELECT 
        SUM(ws.ext_sales_price) AS TotalSales,
        COUNT(ws.ws_order_number) AS TotalOrders,
        ci.CustomerName,
        ci.ca_zip,
        ci.ca_city,
        ci.ca_state
    FROM 
        web_sales ws
    JOIN 
        CustomerInfo ci ON ws.ws_bill_customer_sk = ci.c_customer_sk
    GROUP BY 
        ci.CustomerName, ci.ca_zip, ci.ca_city, ci.ca_state
)
SELECT 
    CustomerName,
    TotalSales,
    TotalOrders,
    CONCAT(ca_city, ', ', ca_state, ' ', ca_zip) AS GeographicLocation
FROM 
    SalesData
WHERE 
    TotalSales > 1000
ORDER BY 
    TotalSales DESC
FETCH FIRST 10 ROWS ONLY;
