
WITH SalesSummary AS (
    SELECT 
        w.w_warehouse_id,
        c.c_customer_id,
        d.d_year,
        SUM(ss.ss_net_profit) AS total_net_profit,
        COUNT(DISTINCT ss.ss_ticket_number) AS total_sales_count
    FROM
        store_sales ss
    JOIN 
        store s ON ss.ss_store_sk = s.s_store_sk
    JOIN 
        warehouse w ON s.s_company_id = w.w_warehouse_sk
    JOIN 
        customer c ON ss.ss_customer_sk = c.c_customer_sk
    JOIN 
        date_dim d ON ss.ss_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year BETWEEN 2021 AND 2023
    GROUP BY 
        w.w_warehouse_id, c.c_customer_id, d.d_year
),
CustomerDemographics AS (
    SELECT 
        c.c_customer_id,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
SalesAnalysis AS (
    SELECT 
        ss.w_warehouse_id,
        cd.cd_gender,
        cd.cd_marital_status,
        AVG(ss.total_net_profit) AS avg_net_profit,
        SUM(ss.total_sales_count) AS total_sales,
        ss.c_customer_id
    FROM 
        SalesSummary ss
    JOIN 
        CustomerDemographics cd ON ss.c_customer_id = cd.c_customer_id
    GROUP BY 
        ss.w_warehouse_id, cd.cd_gender, cd.cd_marital_status, ss.c_customer_id
)
SELECT 
    w.w_warehouse_id,
    ca.city,
    sa.cd_gender,
    sa.cd_marital_status,
    sa.avg_net_profit,
    sa.total_sales
FROM 
    SalesAnalysis sa
JOIN 
    warehouse w ON sa.w_warehouse_id = w.w_warehouse_id
JOIN 
    customer_address ca ON ca.ca_address_sk = (SELECT c.c_current_addr_sk FROM customer c WHERE c.c_customer_id = sa.c_customer_id LIMIT 1)
ORDER BY 
    sa.avg_net_profit DESC, sa.total_sales DESC;
