
WITH AddressData AS (
    SELECT 
        ca_address_id,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip
    FROM 
        customer_address
),
CustomerData AS (
    SELECT 
        c_customer_id,
        CONCAT(c_first_name, ' ', c_last_name) AS full_name,
        cd_gender,
        cd_marital_status
    FROM 
        customer
    JOIN 
        customer_demographics ON c_current_cdemo_sk = cd_demo_sk
),
SalesData AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(ws_order_number) AS order_count
    FROM 
        web_sales
    GROUP BY 
        ws_bill_customer_sk
),
CombinedData AS (
    SELECT 
        c.c_customer_id,
        c.full_name,
        c.cd_gender,
        c.cd_marital_status,
        a.full_address,
        s.total_sales,
        s.order_count
    FROM 
        CustomerData c
    JOIN 
        SalesData s ON c.c_customer_id = s.ws_bill_customer_sk
    JOIN 
        AddressData a ON a.ca_address_id = c.c_customer_id
)
SELECT 
    full_name,
    cd_gender,
    cd_marital_status,
    full_address,
    total_sales,
    order_count
FROM 
    CombinedData
WHERE 
    order_count > 5
ORDER BY 
    total_sales DESC
FETCH FIRST 10 ROWS ONLY;
