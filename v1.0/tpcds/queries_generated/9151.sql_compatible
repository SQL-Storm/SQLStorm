
WITH sales_summary AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_paid) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        AVG(ws.ws_net_profit) AS avg_net_profit
    FROM 
        customer AS c
    JOIN 
        web_sales AS ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        date_dim AS d ON ws.ws_sold_date_sk = d.d_date_sk
    JOIN 
        promotion AS p ON ws.ws_promo_sk = p.p_promo_sk
    JOIN 
        item AS i ON ws.ws_item_sk = i.i_item_sk
    JOIN 
        ship_mode AS sm ON ws.ws_ship_mode_sk = sm.sm_ship_mode_sk
    WHERE 
        d.d_year = 2023
        AND i.i_category = 'Electronics'
        AND sm.sm_type = 'Express'
    GROUP BY 
        c.c_customer_id
),
demographics_summary AS (
    SELECT 
        cd.cd_gender,
        SUM(ss.total_sales) AS total_sales_by_gender,
        AVG(ss.avg_net_profit) AS avg_net_profit_by_gender
    FROM 
        sales_summary AS ss
    JOIN 
        customer_demographics AS cd ON ss.c_customer_id = cd.cd_demo_sk
    GROUP BY 
        cd.cd_gender
)
SELECT 
    cd.cd_gender,
    ds.total_sales_by_gender,
    ds.avg_net_profit_by_gender,
    COUNT(DISTINCT c.c_customer_sk) AS customer_count
FROM 
    demographics_summary AS ds
JOIN 
    customer_demographics AS cd ON ds.cd_gender = cd.cd_gender
JOIN 
    customer AS c ON cd.cd_demo_sk = c.c_current_cdemo_sk
GROUP BY 
    cd.cd_gender, ds.total_sales_by_gender, ds.avg_net_profit_by_gender
ORDER BY 
    ds.total_sales_by_gender DESC;
