
WITH RECURSIVE SalesHierarchy AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_profit) AS total_profit,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY SUM(ws.ws_net_profit) DESC) AS rn
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
    HAVING 
        SUM(ws.ws_net_profit) > 1000
    UNION ALL
    SELECT 
        ch.c_customer_sk,
        ch.c_first_name,
        ch.c_last_name,
        SUM(ws.ws_net_profit) AS total_profit,
        ROW_NUMBER() OVER (PARTITION BY ch.c_customer_sk ORDER BY SUM(ws.ws_net_profit) DESC) AS rn
    FROM 
        customer ch
    JOIN 
        web_sales ws ON ch.c_customer_sk = ws.ws_ship_customer_sk
    JOIN 
        SalesHierarchy sh ON ch.c_customer_sk = sh.c_customer_sk
    WHERE 
        sh.total_profit < 5000
    GROUP BY 
        ch.c_customer_sk, ch.c_first_name, ch.c_last_name
), 
SalesSummary AS (
    SELECT 
        c.c_country,
        COUNT(DISTINCT c.c_customer_sk) AS customer_count,
        SUM(sh.total_profit) AS total_sales,
        MAX(sh.total_profit) AS max_sale
    FROM 
        customer c
    LEFT JOIN 
        SalesHierarchy sh ON c.c_customer_sk = sh.c_customer_sk
    GROUP BY 
        c.c_country
)
SELECT 
    ss.c_country, 
    COALESCE(ss.customer_count, 0) AS customer_count,
    COALESCE(ss.total_sales, 0) AS total_sales,
    COALESCE(ss.max_sale, 0) AS max_sale,
    COUNT(DISTINCT ws.ws_order_number) AS total_orders
FROM 
    SalesSummary ss
LEFT JOIN 
    web_sales ws ON ss.customer_count > 0
GROUP BY 
    ss.c_country, ss.customer_count, ss.total_sales, ss.max_sale
HAVING 
    COALESCE(ss.total_sales, 0) > 10000
ORDER BY 
    total_sales DESC;
