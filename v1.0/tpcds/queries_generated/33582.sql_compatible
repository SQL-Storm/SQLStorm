
WITH RECURSIVE SalesCTE AS (
    SELECT 
        ws_sold_date_sk, 
        ws_item_sk, 
        SUM(ws_quantity) AS total_quantity,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY ws_sold_date_sk) AS rn
    FROM 
        web_sales 
    WHERE 
        ws_sold_date_sk >= '2015-01-01'
    GROUP BY 
        ws_sold_date_sk, ws_item_sk
),
TopSales AS (
    SELECT 
        item.i_item_id,
        item.i_item_desc,
        sales.total_quantity,
        RANK() OVER (ORDER BY sales.total_quantity DESC) AS rank
    FROM 
        item 
    JOIN 
        (SELECT ws_item_sk, SUM(ws_quantity) AS total_quantity
         FROM web_sales 
         GROUP BY ws_item_sk) sales ON item.i_item_sk = sales.ws_item_sk
)
SELECT 
    customer.c_customer_id, 
    customer.c_first_name, 
    customer.c_last_name, 
    address.ca_city, 
    address.ca_state,
    COALESCE(sales.total_quantity, 0) AS total_sales,
    CASE 
        WHEN sales.total_quantity IS NULL THEN 'No Purchases'
        ELSE 'Purchased'
    END AS purchase_status
FROM 
    customer 
LEFT JOIN 
    customer_address address ON customer.c_current_addr_sk = address.ca_address_sk
LEFT JOIN 
    TopSales sales ON sales.i_item_id IN (
        SELECT i_item_id 
        FROM item 
        WHERE i_item_sk IN (
            SELECT ws_item_sk 
            FROM web_sales 
            WHERE ws_sold_date_sk BETWEEN '2015-01-01' AND '2015-12-31'
            GROUP BY ws_item_sk
            HAVING SUM(ws_quantity) > 100
        )
    )
WHERE 
    address.ca_state = 'CA'
    AND customer.c_birth_year BETWEEN 1970 AND 1990
    AND EXISTS (
        SELECT 1 
        FROM store_sales 
        WHERE ss_item_sk = sales.i_item_sk 
        AND ss_sold_date_sk = '2015-01-01'
    )
ORDER BY 
    total_sales DESC 
LIMIT 100;
