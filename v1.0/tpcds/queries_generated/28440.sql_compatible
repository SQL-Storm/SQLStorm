
WITH customer_info AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_salutation, ' ', c.c_first_name, ' ', c.c_last_name) AS full_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status
    FROM 
        customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
sales_info AS (
    SELECT
        ws.ws_sold_date_sk,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_paid) AS total_sales
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_sold_date_sk
),
daily_stats AS (
    SELECT
        d.d_date,
        COALESCE(ci.gender_count, 0) AS gender_count,
        COALESCE(si.total_orders, 0) AS total_orders,
        COALESCE(si.total_quantity, 0) AS total_quantity,
        COALESCE(si.total_sales, 0) AS total_sales
    FROM 
        date_dim d
    LEFT JOIN (
        SELECT 
            ci.cd_gender,
            COUNT(*) AS gender_count
        FROM 
            customer_info ci
        GROUP BY 
            ci.cd_gender
    ) ci ON d.d_date_sk = DATE '2002-10-01'
    LEFT JOIN sales_info si ON d.d_date_sk = si.ws_sold_date_sk
)
SELECT 
    d.d_date AS date,
    d.gender_count,
    d.total_orders,
    d.total_quantity,
    d.total_sales,
    ROW_NUMBER() OVER (ORDER BY d.d_date) AS row_num
FROM 
    daily_stats d
ORDER BY 
    d.d_date DESC
LIMIT 100;
