
WITH CustomerReturns AS (
    SELECT
        sr_customer_sk,
        SUM(sr_return_quantity) AS total_returned_quantity,
        COUNT(DISTINCT sr_ticket_number) AS number_of_returns
    FROM
        store_returns
    GROUP BY
        sr_customer_sk
),
InventoryStatus AS (
    SELECT
        inv_item_sk,
        inv_warehouse_sk,
        SUM(inv_quantity_on_hand) AS total_quantity_on_hand
    FROM
        inventory
    GROUP BY
        inv_item_sk, inv_warehouse_sk
),
SalesData AS (
    SELECT
        ws_item_sk,
        COUNT(ws_order_number) AS total_sales_count,
        SUM(ws_quantity) AS total_sold_quantity,
        SUM(ws_net_profit) AS total_net_profit
    FROM
        web_sales
    WHERE
        ws_sold_date_sk BETWEEN 1000 AND 2000
    GROUP BY
        ws_item_sk
),
ReturnsPerWarehouse AS (
    SELECT
        inv.inv_warehouse_sk,
        SUM(CASE WHEN cr.returned_date_sk IS NOT NULL THEN cr.return_quantity ELSE 0 END) AS total_catalog_returns,
        SUM(CASE WHEN wr.returned_date_sk IS NOT NULL THEN wr.return_quantity ELSE 0 END) AS total_web_returns
    FROM
        InventoryStatus inv
    LEFT JOIN catalog_returns cr ON inv.inv_item_sk = cr.cr_item_sk
    LEFT JOIN web_returns wr ON inv.inv_item_sk = wr.wr_item_sk
    GROUP BY
        inv.inv_warehouse_sk
)
SELECT
    c.c_customer_id,
    c.c_first_name,
    c.c_last_name,
    COALESCE(r.total_returned_quantity, 0) AS total_returns,
    COALESCE(s.total_sales_count, 0) AS sales_count,
    COALESCE(s.total_sold_quantity, 0) AS sold_quantity,
    COALESCE(s.total_net_profit, 0) AS net_profit,
    CASE 
        WHEN COALESCE(r.total_returned_quantity, 0) = 0 THEN 'No Returns'
        WHEN COALESCE(s.total_sales_count, 0) > 50 THEN 'High Activity'
        ELSE 'Normal Activity'
    END AS customer_activity_level,
    inv.total_quantity_on_hand,
    (SELECT COUNT(*) FROM store s WHERE s.s_state = 'NY') AS total_ny_stores
FROM
    customer c
LEFT JOIN CustomerReturns r ON c.c_customer_sk = r.sr_customer_sk
LEFT JOIN SalesData s ON c.c_customer_sk = s.ws_item_sk
LEFT JOIN (
    SELECT
        inv_item_sk,
        SUM(total_quantity_on_hand) AS total_quantity_on_hand
    FROM
        InventoryStatus
    GROUP BY
        inv_item_sk
) inv ON s.ws_item_sk = inv.inv_item_sk
WHERE
    c.c_country IS NULL OR c.c_country = 'USA'
  AND (c.c_birth_year BETWEEN 1980 AND 1990 OR c.c_birth_year IS NULL)
ORDER BY
    customer_activity_level DESC, net_profit DESC
LIMIT 100;
