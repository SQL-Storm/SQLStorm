
WITH RECURSIVE sales_hierarchy AS (
    SELECT 
        ws_sold_date_sk,
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_ext_sales_price) AS total_sales
    FROM web_sales
    GROUP BY ws_sold_date_sk, ws_item_sk
    HAVING SUM(ws_quantity) > 100
    UNION ALL
    SELECT 
        w.ws_sold_date_sk,
        w.ws_item_sk,
        w.ws_quantity + sh.total_quantity,
        w.ws_ext_sales_price + sh.total_sales
    FROM web_sales w
    INNER JOIN sales_hierarchy sh ON w.ws_sold_date_sk = sh.ws_sold_date_sk AND w.ws_item_sk = sh.ws_item_sk
    WHERE w.ws_quantity + sh.total_quantity <= 500
),
customer_info AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        CASE 
            WHEN cd.cd_marital_status = 'M' THEN 'Married'
            ELSE 'Single'
        END AS marital_status,
        ca.ca_city,
        ca.ca_state,
        COUNT(ws.ws_order_number) AS total_orders
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        cd.cd_gender, 
        CASE 
            WHEN cd.cd_marital_status = 'M' THEN 'Married'
            ELSE 'Single'
        END, 
        ca.ca_city, 
        ca.ca_state
)
SELECT 
    ci.c_first_name,
    ci.c_last_name,
    ci.cd_gender,
    ci.marital_status,
    ci.ca_city,
    ci.ca_state,
    COALESCE(sh.total_quantity, 0) AS total_quantity,
    COALESCE(sh.total_sales, 0) AS total_sales
FROM customer_info ci
LEFT JOIN sales_hierarchy sh ON ci.c_customer_sk = sh.ws_item_sk
WHERE (ci.total_orders > 5 AND ci.marital_status = 'Married')
   OR (ci.total_orders < 3 AND ci.marital_status = 'Single')
ORDER BY total_sales DESC
FETCH FIRST 10 ROWS ONLY;
