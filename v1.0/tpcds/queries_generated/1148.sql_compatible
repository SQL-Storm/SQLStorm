
WITH sales_data AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity_sold,
        SUM(ws.ws_net_profit) AS total_net_profit,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY SUM(ws.ws_net_profit) DESC) AS profit_rank
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        ws.ws_sold_date_sk BETWEEN (SELECT MIN(d_date_sk) FROM date_dim WHERE d_year = 2023) AND 
                                    (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2023)
    GROUP BY 
        ws.ws_item_sk
),
top_selling_items AS (
    SELECT 
        sd.ws_item_sk,
        i.i_product_name,
        sd.total_quantity_sold,
        sd.total_net_profit,
        sd.profit_rank
    FROM 
        sales_data sd
    JOIN 
        item i ON sd.ws_item_sk = i.i_item_sk
    WHERE 
        sd.profit_rank <= 10
)
SELECT 
    tsi.i_product_name,
    tsi.total_quantity_sold,
    tsi.total_net_profit,
    (tsi.total_net_profit / NULLIF(tsi.total_quantity_sold, 0)) AS avg_profit_per_item,
    COALESCE(NULLIF(tsi.total_quantity_sold, 0), 'No Sales') AS quantity_status
FROM 
    top_selling_items tsi
ORDER BY 
    tsi.total_net_profit DESC
