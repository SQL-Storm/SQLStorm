
WITH CTE_Customer_Sales AS (
    SELECT
        c.c_customer_sk,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        AVG(ws.ws_net_profit) AS average_profit
    FROM
        customer c
    JOIN
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE
        c.c_preferred_cust_flag = 'Y'
    GROUP BY
        c.c_customer_sk
),

CTE_Product_Sales AS (
    SELECT
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity_sold,
        SUM(ws.ws_ext_sales_price) AS total_sales_value,
        AVG(ws.ws_net_profit) AS avg_profit_per_item
    FROM
        web_sales ws
    JOIN
        item i ON ws.ws_item_sk = i.i_item_sk
    GROUP BY
        ws.ws_item_sk
)

SELECT
    cs.c_customer_sk,
    cs.total_orders,
    cs.total_sales,
    cs.average_profit,
    ps.total_quantity_sold,
    ps.total_sales_value,
    ps.avg_profit_per_item,
    d.d_year
FROM
    CTE_Customer_Sales cs
JOIN
    CTE_Product_Sales ps ON ps.total_sales_value > 10000
JOIN
    date_dim d ON d.d_date_sk = (
        SELECT MAX(ws_shipped_date_sk) 
        FROM web_sales ws 
        WHERE ws.ws_bill_customer_sk = cs.c_customer_sk
    )
ORDER BY
    cs.total_sales DESC, ps.total_sales_value DESC
LIMIT 100;
