
WITH SalesData AS (
    SELECT 
        ws.web_site_id,
        c.c_gender,
        i.i_category,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_sales_price) AS total_sales,
        AVG(ws.ws_net_profit) AS avg_profit
    FROM 
        web_sales ws
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2023
        AND d.d_month_seq BETWEEN 1 AND 6
    GROUP BY 
        ws.web_site_id, c.c_gender, i.i_category
), OverallSales AS (
    SELECT 
        web_site_id,
        SUM(total_quantity) AS overall_quantity,
        SUM(total_sales) AS overall_sales,
        AVG(avg_profit) AS overall_avg_profit
    FROM 
        SalesData
    GROUP BY 
        web_site_id
)
SELECT 
    ws.web_site_id,
    ws.overall_quantity,
    ws.overall_sales,
    ws.overall_avg_profit,
    ROW_NUMBER() OVER (ORDER BY ws.overall_sales DESC) AS sales_rank
FROM 
    OverallSales ws
JOIN 
    web_site w ON ws.web_site_id = w.web_site_id
WHERE 
    w.web_country = 'USA'
ORDER BY 
    ws.overall_sales DESC
FETCH FIRST 10 ROWS ONLY;
