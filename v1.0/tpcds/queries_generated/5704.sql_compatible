
WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        SUM(ws.ws_ext_sales_price) AS total_web_sales,
        SUM(cs.cs_ext_sales_price) AS total_catalog_sales,
        SUM(ss.ss_ext_sales_price) AS total_store_sales
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    LEFT JOIN 
        catalog_sales cs ON c.c_customer_sk = cs.cs_ship_customer_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY 
        c.c_customer_sk
),
SalesSummary AS (
    SELECT 
        cs.c_customer_sk,
        COALESCE(ws.total_web_sales, 0) AS total_web_sales,
        COALESCE(cs.total_catalog_sales, 0) AS total_catalog_sales,
        COALESCE(ss.total_store_sales, 0) AS total_store_sales,
        (COALESCE(ws.total_web_sales, 0) + COALESCE(cs.total_catalog_sales, 0) + COALESCE(ss.total_store_sales, 0)) AS total_sales,
        CASE
            WHEN COALESCE(ws.total_web_sales, 0) = 0 AND COALESCE(cs.total_catalog_sales, 0) = 0 AND COALESCE(ss.total_store_sales, 0) = 0 THEN 'No Sales'
            WHEN COALESCE(ws.total_web_sales, 0) >= COALESCE(cs.total_catalog_sales, 0) AND COALESCE(ws.total_web_sales, 0) >= COALESCE(ss.total_store_sales, 0) THEN 'Web Sales Dominant'
            WHEN COALESCE(cs.total_catalog_sales, 0) >= COALESCE(ws.total_web_sales, 0) AND COALESCE(cs.total_catalog_sales, 0) >= COALESCE(ss.total_store_sales, 0) THEN 'Catalog Sales Dominant'
            ELSE 'Store Sales Dominant'
        END AS dominant_sales_channel
    FROM 
        CustomerSales cs
)
SELECT 
    ss.c_customer_sk,
    ss.total_web_sales,
    ss.total_catalog_sales,
    ss.total_store_sales,
    ss.total_sales,
    ss.dominant_sales_channel,
    COUNT(DISTINCT CASE WHEN ws.ws_order_number IS NOT NULL THEN ws.ws_order_number END) AS total_web_orders,
    COUNT(DISTINCT CASE WHEN cs.cs_order_number IS NOT NULL THEN cs.cs_order_number END) AS total_catalog_orders,
    COUNT(DISTINCT CASE WHEN s.ss_order_number IS NOT NULL THEN s.ss_order_number END) AS total_store_orders
FROM 
    SalesSummary ss
LEFT JOIN 
    web_sales ws ON ss.c_customer_sk = ws.ws_ship_customer_sk
LEFT JOIN 
    catalog_sales cs ON ss.c_customer_sk = cs.cs_ship_customer_sk
LEFT JOIN 
    store_sales s ON ss.c_customer_sk = s.ss_customer_sk
GROUP BY 
    ss.c_customer_sk, ss.total_web_sales, ss.total_catalog_sales, ss.total_store_sales, ss.total_sales, ss.dominant_sales_channel
ORDER BY 
    total_sales DESC
LIMIT 100;
