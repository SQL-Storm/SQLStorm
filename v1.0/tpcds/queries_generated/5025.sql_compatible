
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM customer c
    JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE ws.ws_sold_date_sk BETWEEN 2458468 AND 2458478 
    GROUP BY c.c_customer_id
), 
Demographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        ib.ib_lower_bound,
        ib.ib_upper_bound
    FROM customer_demographics cd
    LEFT JOIN household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
    LEFT JOIN income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
), 
SalesByDemographics AS (
    SELECT 
        ds.cd_gender,
        ds.cd_marital_status,
        SUM(cs.total_sales) AS total_sales,
        COUNT(cs.c_customer_id) AS customer_count
    FROM CustomerSales cs
    JOIN Demographics ds ON cs.c_customer_id = ds.cd_demo_sk
    GROUP BY ds.cd_gender, ds.cd_marital_status
), 
SalesAnalysis AS (
    SELECT 
        cd_gender AS gender,
        cd_marital_status AS marital_status,
        total_sales,
        customer_count,
        total_sales / NULLIF(customer_count, 0) AS avg_sales_per_customer
    FROM SalesByDemographics
)
SELECT 
    gender,
    marital_status,
    total_sales,
    customer_count,
    avg_sales_per_customer,
    RANK() OVER (ORDER BY total_sales DESC) AS sales_rank
FROM SalesAnalysis
WHERE total_sales > 1000
ORDER BY sales_rank;
