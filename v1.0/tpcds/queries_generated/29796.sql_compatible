
SELECT 
    ca_city, 
    ca_state,
    COUNT(DISTINCT c_customer_sk) AS num_customers,
    AVG(cd_purchase_estimate) AS avg_purchase_estimate,
    SUM(elapsed_months) AS total_months_active
FROM 
    customer_address 
JOIN 
    customer ON ca_address_sk = c_current_addr_sk 
JOIN 
    customer_demographics ON c_current_cdemo_sk = cd_demo_sk
JOIN 
    (SELECT 
        c_customer_sk, 
        COUNT(DISTINCT DATE_TRUNC('month', d_date)) AS elapsed_months
     FROM 
        web_sales
     JOIN 
        date_dim ON ws_sold_date_sk = d_date_sk
     GROUP BY 
        c_customer_sk) AS active_months ON active_months.c_customer_sk = c_customer_sk
GROUP BY 
    ca_city, 
    ca_state,
    cd_purchase_estimate
HAVING 
    AVG(cd_purchase_estimate) > 1000
ORDER BY 
    num_customers DESC, 
    ca_state, 
    ca_city;
