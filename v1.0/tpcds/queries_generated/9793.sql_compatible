
WITH SalesData AS (
    SELECT 
        ws.ws_sold_date_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_sales_price) AS total_sales,
        SUM(ws.ws_ext_discount_amt) AS total_discount
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2001 AND 
        dd.d_moy IN (6, 7) 
    GROUP BY 
        ws.ws_sold_date_sk
), 
CustomerDemographics AS (
    SELECT 
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        SUM(sd.total_sales) AS demographic_sales
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        SalesData sd ON c.c_customer_sk = sd.ws_bill_customer_sk
    GROUP BY 
        cd.cd_gender, 
        cd.cd_marital_status, 
        cd.cd_education_status
),
TopDemographics AS (
    SELECT 
        cd.cd_gender AS gender,
        cd.cd_marital_status AS marital_status,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_gender ORDER BY SUM(sd.demographic_sales) DESC) AS sales_rank,
        SUM(sd.demographic_sales) AS total_sales
    FROM 
        CustomerDemographics cd
    GROUP BY 
        cd.cd_gender, 
        cd.cd_marital_status
)
SELECT 
    gender, 
    marital_status, 
    total_sales 
FROM 
    TopDemographics 
WHERE 
    sales_rank <= 5 
ORDER BY 
    gender, total_sales DESC;
