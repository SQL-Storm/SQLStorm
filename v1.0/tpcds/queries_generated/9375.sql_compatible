
WITH CustomerReturns AS (
    SELECT 
        c.c_customer_id,
        SUM(sr.sr_return_quantity) AS total_return_quantity,
        SUM(sr.sr_return_amt) AS total_return_amount,
        COUNT(DISTINCT sr.sr_ticket_number) AS return_count,
        cd.cd_gender,
        h.hd_income_band_sk,
        d.d_year
    FROM 
        customer c
    JOIN 
        store_returns sr ON c.c_customer_sk = sr.sr_customer_sk
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        household_demographics h ON cd.cd_demo_sk = h.hd_demo_sk
    JOIN 
        date_dim d ON sr.sr_returned_date_sk = d.d_date_sk
    GROUP BY 
        c.c_customer_id, cd.cd_gender, h.hd_income_band_sk, d.d_year
), 
ReturnStatistics AS (
    SELECT 
        total_return_quantity,
        total_return_amount,
        return_count,
        COUNT(*) OVER() AS total_customers,
        AVG(total_return_quantity) OVER() AS avg_return_quantity,
        AVG(total_return_amount) OVER() AS avg_return_amount
    FROM 
        CustomerReturns
),
IncomeBandAnalysis AS (
    SELECT 
        ib.ib_income_band_sk,
        COUNT(*) AS customer_count,
        AVG(r.total_return_quantity) AS avg_return_quantity,
        SUM(r.total_return_amount) AS total_return_amount
    FROM 
        ReturnStatistics r
    JOIN 
        household_demographics ib ON r.hd_income_band_sk = ib.hd_income_band_sk
    GROUP BY 
        ib.ib_income_band_sk
)
SELECT 
    ib.ib_income_band_sk,
    ib.customer_count,
    ib.avg_return_quantity,
    ib.total_return_amount,
    r.total_customers,
    r.avg_return_quantity,
    r.avg_return_amount
FROM 
    IncomeBandAnalysis ib
JOIN 
    ReturnStatistics r ON 1=1
ORDER BY 
    ib.ib_income_band_sk;
