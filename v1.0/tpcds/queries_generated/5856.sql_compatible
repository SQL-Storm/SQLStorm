
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_paid) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id
),
Demographics AS (
    SELECT 
        cd.gender AS cd_gender,
        cd.marital_status AS cd_marital_status,
        AVG(cs.total_sales) AS avg_sales,
        AVG(cs.order_count) AS avg_orders
    FROM 
        CustomerSales cs
    JOIN 
        customer_demographics cd ON cs.c_customer_id = cd.demo_sk
    GROUP BY 
        cd.gender, 
        cd.marital_status
)
SELECT 
    d.cd_gender,
    d.cd_marital_status,
    d.avg_sales,
    d.avg_orders,
    CASE 
        WHEN d.avg_sales > 1000 THEN 'High Value'
        WHEN d.avg_sales BETWEEN 500 AND 1000 THEN 'Medium Value'
        ELSE 'Low Value'
    END AS customer_value_segment
FROM 
    Demographics d
ORDER BY 
    d.avg_sales DESC;
