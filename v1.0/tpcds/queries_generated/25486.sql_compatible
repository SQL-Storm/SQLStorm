
WITH CustomerAgg AS (
    SELECT 
        c.c_customer_id, 
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        ca.ca_city,
        cd.cd_marital_status,
        cd.cd_gender,
        COUNT(CASE WHEN ws.ws_order_number IS NOT NULL THEN 1 END) AS total_orders,
        SUM(ws.ws_sales_price) AS total_spent
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id, 
        ca.ca_city, 
        cd.cd_marital_status, 
        cd.cd_gender, 
        c.c_first_name, 
        c.c_last_name
),
CityAgg AS (
    SELECT 
        ca.ca_city,
        COUNT(DISTINCT c.c_customer_id) AS customer_count,
        AVG(ca.total_spent) AS avg_spent,
        SUM(ca.total_orders) AS total_orders
    FROM 
        CustomerAgg ca
    GROUP BY 
        ca.ca_city
)
SELECT 
    ca.ca_city, 
    customer_count, 
    avg_spent, 
    total_orders,
    RANK() OVER (ORDER BY total_orders DESC) AS city_rank
FROM 
    CityAgg ca
WHERE 
    customer_count > 0
ORDER BY 
    city_rank;
