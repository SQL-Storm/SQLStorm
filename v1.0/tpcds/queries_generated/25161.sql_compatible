
WITH AddressDetails AS (
    SELECT 
        ca_address_sk, 
        CONCAT(TRIM(ca_street_number), ' ', TRIM(ca_street_name), ' ', TRIM(ca_street_type)) AS full_address,
        ca_city, 
        ca_state, 
        ca_zip, 
        ca_country
    FROM 
        customer_address
),
CustomerDetails AS (
    SELECT 
        c.c_customer_sk, 
        CONCAT(TRIM(c.c_first_name), ' ', TRIM(c.c_last_name)) AS full_name, 
        c.c_birth_country, 
        cd.cd_marital_status, 
        cd.cd_gender
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
SalesInfo AS (
    SELECT 
        ws.ws_customer_sk, 
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_customer_sk
)
SELECT 
    cd.full_name, 
    ad.full_address, 
    ad.ca_city, 
    ad.ca_state, 
    ad.ca_zip, 
    ad.ca_country, 
    cd.c_birth_country, 
    cd.cd_marital_status, 
    cd.cd_gender, 
    COALESCE(si.total_profit, 0) AS total_profit, 
    COALESCE(si.total_orders, 0) AS total_orders
FROM 
    CustomerDetails cd
JOIN 
    AddressDetails ad ON cd.c_customer_sk = ad.ca_address_sk
LEFT JOIN 
    SalesInfo si ON cd.c_customer_sk = si.ws_customer_sk
WHERE 
    ad.ca_state = 'CA' 
ORDER BY 
    total_profit DESC, 
    total_orders DESC
FETCH FIRST 100 ROWS ONLY;
