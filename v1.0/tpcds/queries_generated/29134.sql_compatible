
WITH AddressInfo AS (
    SELECT 
        ca_address_sk,
        CONCAT_WS(' ', ca_street_number, ca_street_name, ca_street_type) AS Full_Address,
        ca_city,
        ca_state,
        ca_zip
    FROM 
        customer_address
),
CustomerInfo AS (
    SELECT 
        c_customer_sk,
        c_first_name,
        c_last_name,
        c_birth_country,
        cd_gender,
        cd_marital_status,
        cd_purchase_estimate,
        cd.credit_rating
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
SalesInfo AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_sales_price) AS Total_Sales_Amount
    FROM 
        web_sales
    GROUP BY 
        ws_bill_customer_sk
)
SELECT 
    ci.c_customer_sk,
    ci.c_first_name,
    ci.c_last_name,
    ai.Full_Address,
    ai.ca_city,
    ai.ca_state,
    ai.ca_zip,
    ci.c_birth_country,
    ci.cd_gender,
    ci.cd_marital_status,
    ci.cd_purchase_estimate,
    COALESCE(si.Total_Sales_Amount, 0) AS Total_Sales_Amount
FROM 
    CustomerInfo ci
JOIN 
    AddressInfo ai ON ci.c_customer_sk = ai.ca_address_sk
LEFT JOIN 
    SalesInfo si ON ci.c_customer_sk = si.ws_bill_customer_sk
WHERE 
    (ci.cd_gender = 'F' AND ci.cd_marital_status = 'M')
    OR (ci.cd_gender = 'M' AND ci.cd_marital_status = 'S')
ORDER BY 
    Total_Sales_Amount DESC
FETCH FIRST 100 ROWS ONLY;
