
WITH sales_summary AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(ws_order_number) AS order_count,
        DENSE_RANK() OVER (ORDER BY SUM(ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        web_sales
    GROUP BY 
        ws_bill_customer_sk
), 
customer_details AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band_sk,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_income_band_sk ORDER BY c.c_birth_year DESC) AS income_band_rank
    FROM 
        customer c
        LEFT JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
        LEFT JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
)
SELECT 
    cd.c_first_name,
    cd.c_last_name,
    s.total_sales,
    cd.ca_city,
    cd.ca_state,
    cd.ca_country,
    CASE 
        WHEN s.order_count > 10 THEN 'Frequent Buyer'
        WHEN s.order_count BETWEEN 5 AND 10 THEN 'Occasional Buyer'
        ELSE 'Rare Buyer'
    END AS buyer_category
FROM 
    customer_details cd
JOIN 
    sales_summary s ON cd.c_customer_sk = s.ws_bill_customer_sk
WHERE 
    cd.cd_gender = 'M'
    AND cd.income_band_rank <= 3
ORDER BY 
    s.total_sales DESC
OFFSET 5 ROWS FETCH NEXT 10 ROWS ONLY
