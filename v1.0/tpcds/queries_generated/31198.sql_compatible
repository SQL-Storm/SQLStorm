
WITH RECURSIVE sales_hierarchy AS (
    SELECT 
        w.w_warehouse_id,
        s.s_store_id,
        SUM(ws.ws_net_profit) AS total_net_profit
    FROM 
        warehouse w
    JOIN 
        store s ON w.w_warehouse_sk = s.s_company_id
    JOIN 
        web_sales ws ON ws.ws_warehouse_sk = w.w_warehouse_sk
    GROUP BY 
        w.w_warehouse_id, s.s_store_id

    UNION ALL

    SELECT 
        wh.w_warehouse_id,
        st.s_store_id,
        SUM(ws.ws_net_profit) + sh.total_net_profit
    FROM 
        warehouse wh
    JOIN 
        store st ON wh.w_warehouse_sk = st.s_company_id
    JOIN 
        web_sales ws ON ws.ws_warehouse_sk = wh.w_warehouse_sk
    JOIN 
        sales_hierarchy sh ON sh.w_warehouse_id = wh.w_warehouse_id
    GROUP BY 
        wh.w_warehouse_id, st.s_store_id, sh.total_net_profit
),
customer_stats AS (
    SELECT 
        c.c_customer_id,
        d.d_year,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        SUM(ws.ws_net_profit) AS total_spent,
        RANK() OVER (PARTITION BY d.d_year ORDER BY SUM(ws.ws_net_profit) DESC) AS spending_rank
    FROM 
        customer c
    JOIN 
        web_sales ws ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY 
        c.c_customer_id, d.d_year
),
top_customers AS (
    SELECT 
        c.c_customer_id AS customer_id,
        d.d_year,
        cs.order_count,
        cs.total_spent,
        cs.spending_rank
    FROM 
        customer_stats cs
    WHERE 
        cs.spending_rank <= 10
)
SELECT 
    sh.warehouse_id,
    sh.store_id,
    tc.customer_id,
    tc.d_year,
    tc.order_count,
    tc.total_spent,
    CASE 
        WHEN tc.total_spent IS NULL THEN 'No Purchases'
        ELSE 'Active Customer'
    END AS customer_status,
    COALESCE(ca.ca_city, 'Unknown') AS customer_city
FROM 
    sales_hierarchy sh
LEFT JOIN 
    top_customers tc ON sh.store_id = tc.customer_id
LEFT JOIN 
    customer_address ca ON ca.ca_address_sk = (SELECT c.c_current_addr_sk FROM customer c WHERE c.c_customer_id = tc.customer_id)
ORDER BY 
    sh.total_net_profit DESC, sh.warehouse_id, tc.d_year;
