
WITH RECURSIVE sales_summary AS (
    SELECT 
        ws.web_site_sk,
        SUM(ws.ws_net_paid) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023
    GROUP BY 
        ws.web_site_sk
),
ranked_sales AS (
    SELECT 
        s.web_site_sk,
        s.total_sales,
        s.order_count,
        RANK() OVER (ORDER BY s.total_sales DESC) AS sales_rank
    FROM 
        sales_summary s
),
customer_sales AS (
    SELECT 
        c.c_customer_id,
        COUNT(DISTINCT ws.ws_order_number) AS customer_order_count,
        SUM(ws.ws_net_paid) AS customer_total_sales
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id
),
sales_variance AS (
    SELECT 
        ws.web_site_sk,
        ws.ws_net_paid,
        ws.ws_item_sk,
        (ws.ws_net_paid - COALESCE(LAG(ws.ws_net_paid) OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_order_number), 0)) AS sales_change
    FROM 
        web_sales ws
)
SELECT 
    r.web_site_sk,
    r.total_sales,
    r.order_count,
    COALESCE(c.customer_order_count, 0) AS customer_order_count,
    COALESCE(c.customer_total_sales, 0) AS customer_total_sales,
    SUM(sv.sales_change) AS total_sales_variance
FROM 
    ranked_sales r
LEFT JOIN 
    customer_sales c ON r.web_site_sk = c.c_customer_id
LEFT JOIN 
    sales_variance sv ON r.web_site_sk = sv.web_site_sk
WHERE 
    r.sales_rank <= 10
GROUP BY 
    r.web_site_sk, r.total_sales, r.order_count, c.customer_order_count, c.customer_total_sales
HAVING 
    SUM(sv.sales_change) IS NOT NULL 
    AND (r.total_sales > 5000 OR COALESCE(c.customer_order_count, 0) > 5)
ORDER BY 
    r.total_sales DESC;
