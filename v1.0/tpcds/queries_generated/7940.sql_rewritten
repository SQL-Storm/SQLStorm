WITH RankedSales AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws_order_number) AS order_count,
        DENSE_RANK() OVER (ORDER BY SUM(ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk BETWEEN 2450000 AND 2450650  
    GROUP BY 
        ws_bill_customer_sk
),
TopCustomers AS (
    SELECT 
        r.ws_bill_customer_sk,
        c.c_first_name,
        c.c_last_name,
        r.total_sales,
        r.order_count
    FROM 
        RankedSales r
    JOIN 
        customer c ON r.ws_bill_customer_sk = c.c_customer_sk
    WHERE 
        r.sales_rank <= 10
)
SELECT 
    tc.c_first_name, 
    tc.c_last_name, 
    tc.total_sales, 
    tc.order_count, 
    COALESCE(cd.cd_gender, 'N/A') AS gender,
    COALESCE(cd.cd_marital_status, 'N/A') AS marital_status,
    COALESCE(hd.hd_income_band_sk, 'N/A') AS income_band
FROM 
    TopCustomers tc
LEFT JOIN 
    customer_demographics cd ON tc.ws_bill_customer_sk = cd.cd_demo_sk
LEFT JOIN 
    household_demographics hd ON tc.ws_bill_customer_sk = hd.hd_demo_sk
ORDER BY 
    tc.total_sales DESC;