WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        MAX(ws.ws_sold_date_sk) AS last_purchase_date,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        ws.ws_sold_date_sk BETWEEN 20220101 AND 20221231
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status, cd.cd_education_status
),
SalesRanking AS (
    SELECT 
        *,
        RANK() OVER (PARTITION BY cd_gender ORDER BY total_sales DESC) AS sales_rank
    FROM 
        CustomerSales
),
TopCustomers AS (
    SELECT 
        c.c_first_name,
        c.c_last_name,
        total_sales,
        last_purchase_date,
        cd_gender,
        cd_marital_status,
        cd_education_status
    FROM 
        SalesRanking
    WHERE 
        sales_rank <= 10
)
SELECT 
    t.c_first_name,
    t.c_last_name,
    t.total_sales,
    DATE(d.d_date) AS last_purchase_date,
    t.cd_gender,
    t.cd_marital_status,
    t.cd_education_status,
    DATEDIFF(cast('2002-10-01' as date), t.last_purchase_date) AS days_since_last_purchase
FROM 
    TopCustomers t
JOIN 
    date_dim d ON t.last_purchase_date = d.d_date_sk
ORDER BY 
    t.total_sales DESC, t.c_last_name, t.c_first_name;