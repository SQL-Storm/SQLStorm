
WITH ranked_sales AS (
    SELECT
        ws.ws_order_number,
        ws.ws_item_sk,
        ws.ws_sales_price,
        RANK() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_sales_price DESC) AS rank_price
    FROM
        web_sales ws
    WHERE
        ws.ws_ship_date_sk >= (SELECT MAX(d.d_date_sk) FROM date_dim d WHERE d.d_year = 2023)
),
item_summary AS (
    SELECT
        i.i_item_id,
        COUNT(DISTINCT s.ss_ticket_number) AS total_store_sales,
        SUM(s.ss_net_profit) AS total_net_profit
    FROM
        item i
    JOIN store_sales s ON i.i_item_sk = s.ss_item_sk
    GROUP BY
        i.i_item_id
),
customer_info AS (
    SELECT
        c.c_customer_id,
        COALESCE(d.cd_gender, 'U') AS gender,
        d.cd_marital_status,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        SUM(ws.ws_net_paid) AS total_spent
    FROM
        customer c
    LEFT JOIN customer_demographics d ON c.c_current_cdemo_sk = d.cd_demo_sk
    LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY
        c.c_customer_id, d.cd_gender, d.cd_marital_status
),
order_returns AS (
    SELECT
        cr.cr_order_number AS order_num,
        SUM(cr.cr_return_quantity) AS total_returned,
        SUM(cr.cr_return_amount) AS total_returned_amount
    FROM
        catalog_returns cr
    GROUP BY
        cr.cr_order_number
)
SELECT
    ci.c_customer_id,
    ci.gender,
    ci.cd_marital_status,
    ci.total_orders,
    ci.total_spent,
    i.i_item_id,
    iss.total_store_sales,
    iss.total_net_profit,
    COALESCE(ors.total_returned, 0) AS total_returns,
    COALESCE(ors.total_returned_amount, 0) AS total_returned_amount,
    rs.rank_price
FROM
    customer_info ci
JOIN item_summary iss ON ci.total_orders > 0
LEFT JOIN ranked_sales rs ON rs.ws_order_number IN (
    SELECT ws_order_number FROM web_sales WHERE ws_bill_customer_sk = ci.c_customer_id
)
LEFT JOIN order_returns ors ON ors.order_num = rs.ws_order_number
LEFT JOIN item i ON i.i_item_sk = rs.ws_item_sk
WHERE
    ci.total_spent > (
        SELECT AVG(total_spent) FROM customer_info WHERE gender = ci.gender
    ) AND
    (ci.cd_marital_status = 'M' OR ci.cd_marital_status IS NULL)
GROUP BY
    ci.c_customer_id, ci.gender, ci.cd_marital_status, ci.total_orders, ci.total_spent,
    i.i_item_id, iss.total_store_sales, iss.total_net_profit, rs.rank_price
ORDER BY
    ci.total_spent DESC,
    iss.total_net_profit DESC
LIMIT 100;
