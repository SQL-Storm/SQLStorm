
WITH RECURSIVE SalesCTE AS (
    SELECT
        ws.web_site_sk,
        ws.net_profit AS total_profit,
        ROW_NUMBER() OVER (PARTITION BY ws.web_site_sk ORDER BY ws.net_profit DESC) AS rank
    FROM
        web_sales ws
    WHERE
        ws.sold_date_sk = (SELECT d_date_sk FROM date_dim WHERE d_date = '2023-10-01')
    UNION ALL
    SELECT
        ws.web_site_sk,
        ws.net_profit + sc.total_profit AS total_profit,
        ROW_NUMBER() OVER (PARTITION BY ws.web_site_sk ORDER BY ws.net_profit DESC) AS rank
    FROM
        web_sales ws
    JOIN SalesCTE sc ON ws.web_site_sk = sc.web_site_sk
    WHERE
        ws.sold_date_sk = (SELECT d_date_sk FROM date_dim WHERE d_date = '2023-10-02')
)
SELECT
    COALESCE(da.ca_state, 'N/A') AS address_state,
    AVG(cd.cd_purchase_estimate) AS avg_purchase_estimate,
    SUM(CASE WHEN cd.cd_gender = 'M' THEN 1 ELSE 0 END) AS male_customers,
    COUNT(DISTINCT c.c_customer_sk) AS total_customers,
    sm.sm_type,
    SUM(ss.ss_net_profit) AS total_store_profit,
    COUNT(DISTINCT ss.ss_ticket_number) OVER (PARTITION BY ss.ss_store_sk) AS store_sales_count,
    CASE
        WHEN SUM(ws.ws_net_profit) IS NULL THEN 'No Sales'
        ELSE 'Sales Present'
    END AS sales_status
FROM
    customer c
LEFT JOIN
    customer_address da ON c.c_current_addr_sk = da.ca_address_sk
JOIN
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
LEFT JOIN
    web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
LEFT JOIN
    store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
JOIN
    ship_mode sm ON ws.ws_ship_mode_sk = sm.sm_ship_mode_sk
GROUP BY
    da.ca_state, sm.sm_type, cd.cd_purchase_estimate, ws.ws_net_profit
HAVING
    COUNT(c.c_customer_sk) > 100
ORDER BY
    avg_purchase_estimate DESC
LIMIT 10;
