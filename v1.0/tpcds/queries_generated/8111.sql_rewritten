WITH CustomerPurchases AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_profit) AS total_net_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        AVG(ws.ws_net_paid) AS avg_order_value,
        MAX(d.d_date) AS last_purchase_date
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2001
        AND c.c_preferred_cust_flag = 'Y'
    GROUP BY 
        c.c_customer_id
), CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        CASE WHEN cd.cd_gender = 'M' THEN 'Male' ELSE 'Female' END AS gender,
        cd.cd_marital_status,
        ib.ib_income_band_sk,
        ib.ib_lower_bound,
        ib.ib_upper_bound
    FROM 
        customer_demographics cd
    LEFT JOIN 
        household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
    LEFT JOIN 
        income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
), PerformanceMetrics AS (
    SELECT 
        cp.c_customer_id,
        cd.gender,
        cd.cd_marital_status,
        cd.ib_income_band_sk,
        cp.total_net_profit,
        cp.total_orders,
        cp.avg_order_value,
        DATEDIFF(cast('2002-10-01' as date), cp.last_purchase_date) AS days_since_last_purchase
    FROM 
        CustomerPurchases cp
    JOIN 
        CustomerDemographics cd ON cp.c_customer_id = cd.c_customer_id
)
SELECT 
    gender,
    cd_marital_status,
    ib_income_band_sk,
    COUNT(*) AS customer_count,
    SUM(total_net_profit) AS total_profit,
    AVG(avg_order_value) AS avg_order_value,
    AVG(days_since_last_purchase) AS avg_days_since_last_purchase
FROM 
    PerformanceMetrics
GROUP BY 
    gender, cd_marital_status, ib_income_band_sk
ORDER BY 
    total_profit DESC
LIMIT 10;