WITH Recursive_CTE AS (
    SELECT 
        ca.ca_address_sk,
        ca.ca_city,
        ca.ca_state,
        COUNT(c.c_customer_sk) AS customer_count
    FROM 
        customer_address ca
    LEFT JOIN 
        customer c ON ca.ca_address_sk = c.c_current_addr_sk
    GROUP BY 
        ca.ca_address_sk, ca.ca_city, ca.ca_state

    UNION ALL

    SELECT 
        ca.ca_address_sk,
        ca.ca_city,
        ca.ca_state,
        COUNT(c.c_customer_sk) AS customer_count
    FROM 
        customer_address ca
    JOIN 
        Recursive_CTE r ON ca.ca_city = r.ca_city AND ca.ca_state = r.ca_state
    WHERE 
        ca.ca_address_sk != r.ca_address_sk
    GROUP BY 
        ca.ca_address_sk, ca.ca_city, ca.ca_state
)
SELECT 
    a.ca_city,
    a.ca_state,
    SUM(a.customer_count) AS total_customers,
    MAX(a.customer_count) AS max_customers_at_address,
    MIN(a.customer_count) AS min_customers_at_address
FROM 
    Recursive_CTE a
GROUP BY 
    a.ca_city, a.ca_state
HAVING 
    total_customers > 50
ORDER BY 
    total_customers DESC;