WITH sales_summary AS (
    SELECT 
        ws.ws_sold_date_sk,
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_profit) AS total_net_profit,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY SUM(ws.ws_net_profit) DESC) AS item_rank
    FROM 
        web_sales ws
    LEFT JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        i.i_current_price IS NOT NULL
        AND ws.ws_sold_date_sk BETWEEN 2458495 AND 2458496  
    GROUP BY 
        ws.ws_sold_date_sk, ws.ws_item_sk
),
top_sales AS (
    SELECT 
        ss.ws_sold_date_sk,
        ss.ws_item_sk,
        ss.total_quantity,
        ss.total_net_profit,
        i.i_item_desc
    FROM 
        sales_summary ss
    JOIN 
        item i ON ss.ws_item_sk = i.i_item_sk
    WHERE 
        ss.item_rank <= 10
),
customer_stats AS (
    SELECT 
        c.c_customer_id,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        SUM(ws.ws_net_profit) AS total_spent
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        c.c_birth_year < 1980
    GROUP BY 
        c.c_customer_id
)
SELECT 
    t.ws_sold_date_sk,
    ts.i_item_desc,
    ts.total_quantity,
    ts.total_net_profit,
    cs.order_count,
    cs.total_spent
FROM 
    top_sales ts
JOIN 
    customer_stats cs ON ts.ws_item_sk = (SELECT ws_item_sk FROM web_sales WHERE ws_sold_date_sk = ts.ws_sold_date_sk ORDER BY ws_net_profit DESC LIMIT 1)
ORDER BY 
    ts.total_net_profit DESC;