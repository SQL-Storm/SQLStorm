
WITH AddressStats AS (
    SELECT
        ca_state,
        COUNT(*) AS address_count,
        STRING_AGG(CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type, ' ', ca_city), '; ') AS all_addresses
    FROM
        customer_address
    GROUP BY
        ca_state
),
CustomerDemographics AS (
    SELECT
        cd_gender,
        COUNT(*) AS demographic_count,
        STRING_AGG(CONCAT(cd_marital_status, ' ', cd_education_status, ' ', cd_credit_rating), '; ') AS demographics_summary
    FROM
        customer_demographics
    GROUP BY
        cd_gender
),
SalesSummary AS (
    SELECT
        d.d_year,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws_order_number) AS total_orders,
        STRING_AGG(DISTINCT CAST(ws_item_sk AS TEXT), ', ') AS sold_item_ids
    FROM
        web_sales AS ws
    JOIN
        date_dim AS d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY
        d.d_year
)
SELECT
    a.ca_state,
    a.address_count,
    a.all_addresses,
    c.cd_gender,
    c.demographic_count,
    c.demographics_summary,
    s.d_year,
    s.total_sales,
    s.total_orders,
    s.sold_item_ids
FROM
    AddressStats AS a
FULL OUTER JOIN
    CustomerDemographics AS c ON c.demographic_count > 0
FULL OUTER JOIN
    SalesSummary AS s ON s.total_orders > 0
ORDER BY
    a.address_count DESC, c.demographic_count DESC, s.total_sales DESC;
