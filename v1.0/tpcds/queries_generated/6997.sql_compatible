
WITH sales_summary AS (
    SELECT 
        c.c_customer_sk, 
        c.c_gender, 
        SUM(ws.ws_net_paid_inc_tax) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2022
    GROUP BY 
        c.c_customer_sk, c.c_gender
),
top_customers AS (
    SELECT 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        ss.total_sales, 
        ss.total_orders,
        RANK() OVER (ORDER BY ss.total_sales DESC) AS sales_rank
    FROM 
        sales_summary ss
    JOIN 
        customer c ON ss.c_customer_sk = c.c_customer_sk
    WHERE 
        ss.total_orders > 5
)
SELECT 
    tc.c_customer_sk,
    tc.c_first_name,
    tc.c_last_name,
    tc.total_sales,
    tc.total_orders,
    w.w_country,
    wd.w_division_name
FROM 
    top_customers tc
JOIN 
    customer_address ca ON tc.c_customer_sk = ca.ca_address_sk
JOIN 
    warehouse w ON ca.ca_address_sk = w.w_warehouse_sk
JOIN 
    warehouse_division wd ON w.w_warehouse_sk = wd.warehouse_sk
WHERE 
    tc.sales_rank <= 10
ORDER BY 
    tc.total_sales DESC;
