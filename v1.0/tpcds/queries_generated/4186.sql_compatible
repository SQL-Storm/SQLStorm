
WITH customer_info AS (
    SELECT 
        c.c_customer_sk,
        c.c_customer_id,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        c.c_birth_month,
        c.c_birth_year,
        c.c_zip,
        ca.ca_city,
        ca.ca_state
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
sales_data AS (
    SELECT 
        ws.ws_sold_date_sk,
        ws.ws_item_sk,
        ws.ws_quantity,
        ws.ws_net_paid,
        ws.ws_net_profit,
        d.d_year,
        d.d_month_seq
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year BETWEEN 2019 AND 2022
),
aggregated_sales AS (
    SELECT 
        c.cd_gender AS gender,
        s.d_year,
        s.d_month_seq,
        SUM(s.ws_quantity) AS total_quantity,
        SUM(s.ws_net_paid) AS total_sales,
        AVG(s.ws_net_profit) AS avg_profit
    FROM 
        sales_data s
    LEFT JOIN 
        customer_info c ON c.c_customer_sk = s.ws_bill_customer_sk
    GROUP BY 
        c.cd_gender, s.d_year, s.d_month_seq
),
return_data AS (
    SELECT 
        wr.wr_returning_customer_sk,
        SUM(wr.wr_return_quantity) AS total_returns
    FROM 
        web_returns wr
    GROUP BY 
        wr.wr_returning_customer_sk
)
SELECT 
    ag.gender,
    ag.d_year,
    ag.d_month_seq,
    ag.total_quantity,
    ag.total_sales,
    ag.avg_profit,
    COALESCE(r.total_returns, 0) AS total_returns
FROM 
    aggregated_sales ag
LEFT JOIN 
    return_data r ON ag.gender = (SELECT c.cd_gender FROM customer_demographics c WHERE c.cd_demo_sk = r.wr_returning_customer_sk)
ORDER BY 
    ag.d_year, ag.d_month_seq, ag.gender;
