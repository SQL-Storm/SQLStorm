
WITH RECURSIVE customer_hierarchy AS (
    SELECT c_customer_sk, c_first_name, c_last_name, c_preferred_cust_flag,
           0 AS level
    FROM customer
    WHERE c_preferred_cust_flag = 'Y'
    
    UNION ALL
    
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, c.c_preferred_cust_flag,
           ch.level + 1
    FROM customer_hierarchy ch
    JOIN customer c ON c.c_current_cdemo_sk = ch.c_customer_sk
),
sales_summary AS (
    SELECT ws_bill_customer_sk,
           SUM(ws_net_profit) AS total_profit,
           COUNT(ws_order_number) AS total_orders
    FROM web_sales
    GROUP BY ws_bill_customer_sk
),
active_promotions AS (
    SELECT p.p_promo_sk, p.p_promo_name, COUNT(cs.cs_order_number) AS order_count
    FROM promotion p
    LEFT JOIN catalog_sales cs ON p.p_promo_sk = cs.cs_promo_sk
    WHERE p.p_start_date_sk <= (SELECT MAX(d_date_sk) FROM date_dim)
      AND p.p_end_date_sk >= (SELECT MIN(d_date_sk) FROM date_dim)
    GROUP BY p.p_promo_sk, p.p_promo_name
),
store_inventory_status AS (
    SELECT inv.inv_item_sk, 
           SUM(inv.inv_quantity_on_hand) AS total_quantity,
           COUNT(inv.inv_warehouse_sk) AS total_stores
    FROM inventory inv
    GROUP BY inv.inv_item_sk
)
SELECT c.c_first_name,
       c.c_last_name,
       ch.level,
       ss.total_profit,
       ss.total_orders,
       ap.promo_name,
       si.total_quantity,
       si.total_stores
FROM customer_hierarchy ch
JOIN customer c ON c.c_customer_sk = ch.c_customer_sk
LEFT JOIN sales_summary ss ON ss.ws_bill_customer_sk = c.c_customer_sk
LEFT JOIN active_promotions ap ON ap.order_count > 0
LEFT JOIN store_inventory_status si ON si.inv_item_sk = c.c_current_addr_sk
WHERE ss.total_profit IS NOT NULL
  AND (si.total_quantity IS NULL OR si.total_quantity > 100)
ORDER BY ch.level, ss.total_profit DESC
FETCH FIRST 100 ROWS ONLY;
