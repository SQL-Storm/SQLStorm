
WITH SalesData AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_item_sk,
        ws.ws_quantity,
        ws.ws_sales_price,
        ws.ws_net_profit,
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        d.d_date,
        s.s_store_name,
        w.w_warehouse_name,
        sm.sm_type
    FROM 
        web_sales ws
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    JOIN 
        store s ON ws.ws_ship_addr_sk = s.s_addr_sk
    JOIN 
        warehouse w ON s.s_store_sk = w.w_warehouse_sk
    JOIN 
        ship_mode sm ON ws.ws_ship_mode_sk = sm.sm_ship_mode_sk
    WHERE 
        d.d_year = 2023
),
AggregatedSales AS (
    SELECT 
        c_customer_id,
        COUNT(ws_order_number) AS total_orders,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_net_profit) AS total_profit,
        AVG(ws_sales_price) AS avg_sales_price,
        s_store_name,
        w_warehouse_name,
        sm_type
    FROM 
        SalesData
    GROUP BY 
        c_customer_id, s_store_name, w_warehouse_name, sm_type
)

SELECT 
    c_customer_id,
    total_orders,
    total_quantity,
    total_profit,
    avg_sales_price,
    s_store_name,
    w_warehouse_name,
    sm_type
FROM 
    AggregatedSales
WHERE 
    total_profit > 1000
ORDER BY 
    total_profit DESC
FETCH FIRST 100 ROWS ONLY;
