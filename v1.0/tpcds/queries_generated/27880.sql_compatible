
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        ca.ca_city,
        ca.ca_state,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders,
        STRING_AGG(DISTINCT CONCAT(i.i_item_desc, ': ', ws.ws_quantity), '; ') AS purchased_items
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        EXTRACT(YEAR FROM DATE '2002-10-01') - c.c_birth_year BETWEEN 18 AND 65
    GROUP BY 
        c.c_customer_id, ca.ca_city, ca.ca_state
),
HighSpenders AS (
    SELECT
        ca.ca_city,
        ca.ca_state,
        AVG(total_sales) AS avg_sales
    FROM 
        CustomerSales
    GROUP BY 
        ca.ca_city, ca.ca_state
    HAVING 
        AVG(total_sales) > 1000
)
SELECT 
    cs.c_customer_id,
    cs.ca_city,
    cs.ca_state,
    cs.total_sales,
    cs.total_orders,
    hs.avg_sales,
    cs.purchased_items
FROM 
    CustomerSales cs
JOIN 
    HighSpenders hs ON cs.ca_city = hs.ca_city AND cs.ca_state = hs.ca_state
ORDER BY 
    cs.total_sales DESC
FETCH FIRST 100 ROWS ONLY;
