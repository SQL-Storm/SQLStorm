
WITH sales_summary AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        AVG(ws.ws_net_paid) AS average_order_value,
        MAX(ws.ws_sales_price) AS max_item_price,
        MIN(ws.ws_sales_price) AS min_item_price,
        COUNT(DISTINCT ws.ws_item_sk) AS unique_items_sold
    FROM 
        customer AS c
    JOIN 
        web_sales AS ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        date_dim AS d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2023
    GROUP BY 
        c.c_customer_id
),
demographics_summary AS (
    SELECT 
        cd.cd_gender,
        AVG(ss.total_profit) AS avg_profit,
        AVG(ss.total_orders) AS avg_orders,
        AVG(ss.average_order_value) AS avg_order_value
    FROM 
        sales_summary AS ss
    JOIN 
        customer_demographics AS cd ON ss.c_customer_id = cd.cd_demo_sk
    GROUP BY 
        cd.cd_gender
)
SELECT 
    ds.cd_gender,
    ds.avg_profit,
    ds.avg_orders,
    ds.avg_order_value
FROM 
    demographics_summary AS ds
ORDER BY 
    ds.avg_profit DESC
FETCH FIRST 10 ROWS ONLY;
