
WITH sales_summary AS (
    SELECT 
        w.warehouse_name,
        d.d_year,
        s.ss_item_sk,
        SUM(s.ss_quantity) AS total_quantity,
        SUM(s.ss_net_profit) AS total_net_profit,
        RANK() OVER (PARTITION BY w.warehouse_name, d.d_year ORDER BY SUM(s.ss_net_profit) DESC) AS rank_profit
    FROM 
        store_sales s
    JOIN 
        warehouse w ON s.ss_store_sk = w.w_warehouse_sk
    JOIN 
        date_dim d ON s.ss_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2022
    GROUP BY 
        w.warehouse_name, d.d_year, s.ss_item_sk
), top_sales AS (
    SELECT 
        warehouse_name, 
        d_year, 
        ss_item_sk, 
        total_quantity, 
        total_net_profit,
        rank_profit
    FROM 
        sales_summary
    WHERE 
        rank_profit <= 5
)
SELECT 
    t.warehouse_name,
    d.d_month_seq,
    t.ss_item_sk,
    i.i_item_desc,
    t.total_quantity,
    t.total_net_profit,
    COALESCE(ROUND(t.total_net_profit / NULLIF(t.total_quantity, 0), 2), 0) AS profit_per_item,
    CASE 
        WHEN t.total_net_profit > 1000 THEN 'High Profit'
        WHEN t.total_net_profit BETWEEN 500 AND 1000 THEN 'Medium Profit'
        ELSE 'Low Profit'
    END AS profit_category
FROM 
    top_sales t
JOIN 
    item i ON t.ss_item_sk = i.i_item_sk
JOIN 
    date_dim d ON t.d_year = d.d_year
ORDER BY 
    t.warehouse_name, t.total_net_profit DESC;
