
WITH CustomerReturns AS (
    SELECT 
        cr_returning_customer_sk,
        SUM(cr_return_quantity) AS total_returned,
        SUM(cr_return_amount) AS total_return_amount
    FROM catalog_returns
    GROUP BY cr_returning_customer_sk
),
WebSales AS (
    SELECT 
        ws_bill_customer_sk,
        COUNT(ws_order_number) AS total_orders,
        SUM(ws_net_profit) AS total_net_profit
    FROM web_sales
    GROUP BY ws_bill_customer_sk
),
StoreReturns AS (
    SELECT 
        sr_customer_sk,
        COUNT(sr_ticket_number) AS total_store_returns,
        SUM(sr_return_amt) AS total_store_return_amt
    FROM store_returns
    GROUP BY sr_customer_sk
),
CustomerDemographics AS (
    SELECT 
        c.c_customer_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_credit_rating,
        cd.cd_purchase_estimate
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
RankedReturns AS (
    SELECT 
        cr.cr_returning_customer_sk,
        cr.total_returned,
        cr.total_return_amount,
        ws.total_orders,
        ws.total_net_profit,
        st.total_store_returns,
        st.total_store_return_amt,
        ROW_NUMBER() OVER (PARTITION BY cr.cr_returning_customer_sk ORDER BY cr.total_return_amount DESC) AS rn
    FROM CustomerReturns cr
    LEFT JOIN WebSales ws ON cr.cr_returning_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN StoreReturns st ON cr.cr_returning_customer_sk = st.sr_customer_sk
)
SELECT 
    c.c_customer_id,
    cd.cd_gender,
    cd.cd_marital_status,
    COALESCE(rr.total_returned, 0) AS total_returns,
    COALESCE(rr.total_return_amount, 0) AS total_return_amount,
    COALESCE(rr.total_orders, 0) AS total_orders,
    COALESCE(rr.total_net_profit, 0) AS total_net_profit,
    COALESCE(rr.total_store_returns, 0) AS total_store_returns,
    COALESCE(rr.total_store_return_amt, 0) AS total_store_return_amt
FROM customer c
JOIN CustomerDemographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
LEFT JOIN RankedReturns rr ON c.c_customer_sk = rr.cr_returning_customer_sk
WHERE (cd.cd_purchase_estimate > 1000 OR cd.cd_credit_rating = 'Excellent')
AND cd.cd_gender IS NOT NULL
ORDER BY COALESCE(rr.total_return_amount, 0) DESC
LIMIT 100;
