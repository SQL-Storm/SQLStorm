
WITH RankedSales AS (
    SELECT 
        ws.ws_sales_price,
        ws.ws_quantity,
        ws.ws_net_profit,
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY ws.ws_net_profit DESC) AS rn
    FROM 
        web_sales AS ws
    JOIN 
        customer AS c ON ws.ws_bill_customer_sk = c.c_customer_sk
    WHERE 
        ws.ws_sold_date_sk = (
            SELECT MAX(d_date_sk) 
            FROM date_dim 
            WHERE d_date = '2002-10-01'
        )
),
HighValueCustomers AS (
    SELECT 
        c.c_customer_id,
        SUM(rs.ws_net_profit) AS total_net_profit
    FROM 
        RankedSales AS rs
    JOIN 
        customer AS c ON rs.c_customer_id = c.c_customer_id
    WHERE 
        rs.rn = 1
    GROUP BY 
        c.c_customer_id
    HAVING 
        SUM(rs.ws_net_profit) > 1000
)
SELECT 
    c.c_customer_id,
    c.c_first_name,
    c.c_last_name,
    COALESCE(dc.d_date, 'N/A') AS last_purchase_date,
    SUM(wr.wr_return_amt) AS total_returns
FROM 
    HighValueCustomers AS hv
JOIN 
    customer AS c ON hv.c_customer_id = c.c_customer_id
LEFT JOIN 
    web_returns AS wr ON c.c_customer_sk = wr.wr_returning_customer_sk AND wr.wr_returned_date_sk IN (
        SELECT d_date_sk 
        FROM date_dim
        WHERE d_date = '2002-10-01'
    )
LEFT JOIN 
    date_dim AS dc ON dc.d_date_sk = (
        SELECT MAX(d_date_sk) 
        FROM web_sales 
        WHERE ws_bill_customer_sk = c.c_customer_sk
    )
GROUP BY 
    c.c_customer_id, c.c_first_name, c.c_last_name, dc.d_date
ORDER BY 
    total_returns DESC;
