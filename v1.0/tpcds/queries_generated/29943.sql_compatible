
WITH CustomerAddressInfo AS (
    SELECT 
        ca.ca_address_sk,
        CONCAT(ca.ca_street_number, ' ', ca.ca_street_name, ' ', ca.ca_street_type) AS full_address,
        ca.ca_city,
        ca.ca_state,
        ca.ca_zip,
        ca.ca_country
    FROM customer_address ca
),
CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status
    FROM customer_demographics cd
),
SalesData AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_sold,
        SUM(ws.ws_sales_price) AS total_sales
    FROM web_sales ws
    GROUP BY ws.ws_item_sk
),
TopItems AS (
    SELECT 
        item.i_item_sk,
        item.i_product_name,
        sales.total_sold,
        sales.total_sales
    FROM item item
    JOIN SalesData sales ON item.i_item_sk = sales.ws_item_sk
    ORDER BY sales.total_sales DESC
    LIMIT 10
)
SELECT 
    ci.full_address,
    ci.ca_city,
    ci.ca_state,
    ci.ca_zip,
    ci.ca_country,
    td.i_product_name,
    td.total_sold,
    td.total_sales,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.cd_education_status
FROM CustomerAddressInfo ci
JOIN CustomerDemographics cd ON ci.ca_address_sk = cd.cd_demo_sk
JOIN TopItems td ON cd.cd_demo_sk IN (SELECT c.cd_current_cdemo_sk FROM customer c WHERE c.c_customer_sk = ci.ca_address_sk)
ORDER BY ci.ca_city, td.total_sales DESC;
