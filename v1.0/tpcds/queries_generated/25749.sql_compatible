
SELECT 
    ca.city AS address_city,
    CONCAT(LEFT(c.first_name, 1), '.', c.last_name) AS customer_name_initials,
    d.year AS sales_year,
    COUNT(DISTINCT ws.ws_order_number) AS total_web_sales,
    SUM(ws.ws_net_profit) AS total_net_profit,
    STRING_AGG(DISTINCT p.p_promo_name, ', ') AS applied_promotions
FROM 
    customer c
JOIN 
    customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
JOIN 
    web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
JOIN 
    date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
LEFT JOIN 
    promotion p ON ws.ws_promo_sk = p.p_promo_sk
WHERE 
    ca.city IS NOT NULL
    AND c.c_birth_year >= 1980
    AND ws.ws_sales_price > 0
GROUP BY 
    ca.city, c.first_name, c.last_name, d.year
ORDER BY 
    ca.city, d.year;
