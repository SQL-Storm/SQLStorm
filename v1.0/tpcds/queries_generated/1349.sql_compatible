
WITH RankedReturns AS (
    SELECT 
        wr_returning_customer_sk,
        COUNT(*) AS total_returns,
        SUM(wr_return_amt_inc_tax) AS total_return_amount,
        DENSE_RANK() OVER (PARTITION BY wr_returning_customer_sk ORDER BY SUM(wr_return_amt_inc_tax) DESC) AS return_rank
    FROM web_returns
    GROUP BY wr_returning_customer_sk
),
CustomerDetails AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band_sk,
        cd.cd_purchase_estimate,
        COALESCE(ib.ib_lower_bound, 0) AS income_lower_bound,
        COALESCE(ib.ib_upper_bound, 0) AS income_upper_bound,
        COUNT(DISTINCT wr.wr_item_sk) AS unique_returned_items
    FROM customer c
    LEFT JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN household_demographics hd ON c.c_current_hdemo_sk = hd.hd_demo_sk
    LEFT JOIN income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
    LEFT JOIN web_returns wr ON c.c_customer_sk = wr.w_returning_customer_sk
    GROUP BY 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        cd.cd_gender, 
        cd.cd_marital_status, 
        cd.cd_income_band_sk,
        cd.cd_purchase_estimate,
        ib.ib_lower_bound, 
        ib.ib_upper_bound
),
HighReturnCustomers AS (
    SELECT 
        cr.wr_returning_customer_sk,
        rd.total_returns,
        rd.total_return_amount
    FROM RankedReturns rd
    JOIN web_returns cr ON rd.wr_returning_customer_sk = cr.w_returning_customer_sk
    WHERE rd.return_rank <= 5
)
SELECT 
    cd.c_customer_sk,
    cd.c_first_name,
    cd.c_last_name,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.income_lower_bound,
    cd.income_upper_bound,
    cd.unique_returned_items,
    COALESCE(hr.total_returns, 0) AS high_return_count,
    COALESCE(hr.total_return_amount, 0) AS high_return_amount
FROM CustomerDetails cd
LEFT JOIN HighReturnCustomers hr ON cd.c_customer_sk = hr.wr_returning_customer_sk
WHERE cd.cd_purchase_estimate > 500 
AND (cd.cd_gender = 'F' OR cd.cd_marital_status = 'M')
ORDER BY cd.unique_returned_items DESC, hr.total_return_amount DESC;
