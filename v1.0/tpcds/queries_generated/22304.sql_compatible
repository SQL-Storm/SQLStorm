
WITH RankedSales AS (
    SELECT 
        ws_item_sk, 
        ws_sales_price, 
        ws_ext_sales_price, 
        ws_net_paid, 
        ws_net_profit, 
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY ws_sales_price DESC) AS rnk
    FROM 
        web_sales
    WHERE 
        ws_net_paid > 0
),
AggregatedSales AS (
    SELECT 
        ws_item_sk,
        SUM(ws_net_profit) AS total_profit,
        AVG(ws_sales_price) AS avg_price,
        COUNT(*) AS sales_count
    FROM 
        web_sales
    WHERE 
        ws_ship_date_sk IS NOT NULL 
    GROUP BY 
        ws_item_sk
)
SELECT 
    ca.city, 
    ca.state, 
    cd.cd_gender, 
    COUNT(DISTINCT ws.ws_order_number) AS orders_count,
    COALESCE(SUM(rs.ws_ext_sales_price), 0) AS total_sales_price,
    GREATEST(COALESCE(SUM(rs.ws_net_profit), 0), (SELECT MAX(total_profit) FROM AggregatedSales)) AS max_profit
FROM 
    customer c
JOIN 
    customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
LEFT JOIN 
    web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
LEFT JOIN 
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
LEFT JOIN 
    RankedSales rs ON ws.ws_item_sk = rs.ws_item_sk AND rs.rnk = 1
WHERE 
    ca.ca_state IS NOT NULL 
    AND (c.c_birth_year < 1990 OR cd.cd_marital_status = 'M')
GROUP BY 
    ca.city, 
    ca.state, 
    cd.cd_gender 
HAVING 
    COUNT(DISTINCT ws.ws_order_number) > 5 
    OR MAX(CASE WHEN cd.cd_gender IS NULL THEN 1 ELSE 0 END) = 1
ORDER BY 
    total_sales_price DESC 
LIMIT 10;
