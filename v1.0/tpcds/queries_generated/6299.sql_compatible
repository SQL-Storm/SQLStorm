
WITH RankedSales AS (
    SELECT 
        ws.ws_item_sk,
        ws.ws_order_number,
        ws.ws_sales_price,
        ws.ws_quantity,
        cd.cd_gender,
        cd.cd_marital_status,
        ca.ca_city,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_sales_price DESC) AS sales_rank
    FROM
        web_sales ws
    JOIN
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    WHERE
        ws.ws_sold_date_sk BETWEEN (SELECT MIN(d_date_sk) FROM date_dim) AND (SELECT MAX(d_date_sk) FROM date_dim)
),
TopSales AS (
    SELECT 
        rs.ws_item_sk,
        rs.ws_order_number,
        rs.ws_sales_price,
        rs.ws_quantity,
        rs.cd_gender,
        rs.cd_marital_status,
        rs.ca_city
    FROM 
        RankedSales rs
    WHERE 
        rs.sales_rank <= 10
),
AggregatedSales AS (
    SELECT 
        cd.cd_gender,
        cd.cd_marital_status,
        ca.ca_city,
        SUM(ts.ws_sales_price * ts.ws_quantity) AS total_sales
    FROM 
        TopSales ts
    JOIN 
        customer_demographics cd ON ts.cd_gender = cd.cd_gender AND ts.cd_marital_status = cd.cd_marital_status
    JOIN 
        customer_address ca ON ts.ca_city = ca.ca_city
    GROUP BY 
        cd.cd_gender, cd.cd_marital_status, ca.ca_city
)
SELECT 
    ag.cd_gender,
    ag.cd_marital_status,
    ag.ca_city,
    AVG(ag.total_sales) AS avg_total_sales
FROM 
    AggregatedSales ag
GROUP BY 
    ag.cd_gender, ag.cd_marital_status, ag.ca_city
ORDER BY 
    avg_total_sales DESC
FETCH FIRST 50 ROWS ONLY;
