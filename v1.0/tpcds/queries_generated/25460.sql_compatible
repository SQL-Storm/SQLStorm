
WITH ranked_customers AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band,
        RANK() OVER (PARTITION BY cd.cd_income_band ORDER BY c.c_birth_year DESC) AS rnk
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        ca.ca_state IN ('CA', 'TX', 'NY')
),
recent_customers AS (
    SELECT 
        rc.c_customer_id,
        rc.c_first_name,
        rc.c_last_name,
        rc.ca_city,
        rc.ca_state,
        rc.cd_gender,
        rc.cd_marital_status,
        rc.cd_income_band
    FROM 
        ranked_customers rc
    WHERE 
        rc.rnk <= 5
),
return_summary AS (
    SELECT 
        wr_returning_customer_sk AS customer_sk,
        COUNT(*) AS total_returns,
        SUM(wr_return_amt) AS total_return_amount
    FROM 
        web_returns
    GROUP BY 
        wr_returning_customer_sk
)
SELECT 
    rc.c_customer_id,
    rc.c_first_name,
    rc.c_last_name,
    rc.ca_city,
    rc.ca_state,
    rc.cd_gender,
    rc.cd_marital_status,
    COALESCE(rs.total_returns, 0) AS total_returns,
    COALESCE(rs.total_return_amount, 0) AS total_return_amount
FROM 
    recent_customers rc
LEFT JOIN 
    return_summary rs ON rc.c_customer_id = rs.customer_sk
ORDER BY 
    rc.ca_city, rc.c_last_name, rc.c_first_name;
