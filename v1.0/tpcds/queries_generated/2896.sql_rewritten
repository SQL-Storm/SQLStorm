WITH RankedSales AS (
    SELECT
        ws_bill_customer_sk,
        ws_item_sk,
        ws_quantity,
        ws_net_profit,
        RANK() OVER (PARTITION BY ws_bill_customer_sk ORDER BY ws_net_profit DESC) AS rank
    FROM
        web_sales
    WHERE
        ws_sold_date_sk BETWEEN 2450011 AND 2450013 
),
TopCustomers AS (
    SELECT
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        SUM(ws_net_profit) AS total_profit
    FROM
        customer c
    JOIN
        RankedSales rs ON c.c_customer_sk = rs.ws_bill_customer_sk
    WHERE
        rs.rank = 1
    GROUP BY
        c.c_customer_id, c.c_first_name, c.c_last_name
),
CustomerRegions AS (
    SELECT
        ca_city,
        COUNT(DISTINCT c.c_customer_id) AS customer_count,
        AVG(cd_dep_count) AS avg_dep_count
    FROM
        customer_address ca
    LEFT JOIN
        customer c ON ca.ca_address_sk = c.c_current_addr_sk
    LEFT JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY
        ca_city
),
PromotionReturns AS (
    SELECT
        p.p_promo_name,
        SUM(sr_return_quantity) AS total_returns
    FROM
        store_returns sr
    JOIN
        promotion p ON sr.sr_item_sk = p.p_item_sk
    GROUP BY
        p.p_promo_name
    HAVING
        SUM(sr_return_quantity) > 10
),
TotalInformation AS (
    SELECT
        cr.ca_city,
        COALESCE(cr.customer_count, 0) AS num_customers,
        COALESCE(cr.avg_dep_count, 0) AS avg_dependents,
        COALESCE(pr.total_returns, 0) AS total_promotion_returns
    FROM
        CustomerRegions cr
    FULL OUTER JOIN
        PromotionReturns pr ON cr.ca_city = pr.p_promo_name
)
SELECT
    ci.c_customer_id,
    ci.total_profit,
    ti.num_customers,
    ti.avg_dependents,
    ti.total_promotion_returns
FROM
    TopCustomers ci
JOIN
    TotalInformation ti ON ci.c_customer_id = ti.num_customers
WHERE
    (ti.num_customers IS NOT NULL OR ti.avg_dependents > 0)
    AND ci.total_profit > 1000
ORDER BY
    ci.total_profit DESC;