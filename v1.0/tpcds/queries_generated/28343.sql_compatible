
WITH CustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        CASE 
            WHEN cd.cd_gender = 'M' THEN 'Male'
            WHEN cd.cd_gender = 'F' THEN 'Female'
            ELSE 'Other'
        END AS gender,
        COALESCE(SUBSTRING(c.c_email_address, CHARINDEX('@', c.c_email_address) + 1, LEN(c.c_email_address)), 'Unknown') AS email_domain,
        SUM(ss.ss_quantity) AS total_purchases
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, c.c_email_address
),
GeographicDistribution AS (
    SELECT 
        ca.ca_city,
        COUNT(DISTINCT ci.c_customer_sk) AS customer_count,
        AVG(cd.cd_dep_count) AS avg_dependents
    FROM 
        customer_address ca
    JOIN 
        customer c ON ca.ca_address_sk = c.c_current_addr_sk
    JOIN 
        CustomerInfo ci ON c.c_customer_sk = ci.c_customer_sk
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        ca.ca_city
),
SalesSummary AS (
    SELECT 
        ws.ws_web_site_sk,
        SUM(ws.ws_net_paid) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        AVG(ws.ws_net_profit) AS avg_profit_per_order
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_web_site_sk
)

SELECT 
    ci.full_name,
    ci.gender,
    ci.email_domain,
    gd.customer_count,
    gd.avg_dependents,
    ss.total_sales,
    ss.total_orders,
    ss.avg_profit_per_order
FROM 
    CustomerInfo ci
JOIN 
    GeographicDistribution gd ON ci.c_customer_sk IN (SELECT c.c_customer_sk FROM customer c WHERE c.c_current_addr_sk IS NOT NULL)
CROSS JOIN 
    SalesSummary ss
ORDER BY 
    ss.total_sales DESC, 
    gd.customer_count DESC;
