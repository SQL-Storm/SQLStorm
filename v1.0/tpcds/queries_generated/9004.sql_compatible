
WITH customer_data AS (
    SELECT 
        c.c_customer_id, 
        cd.cd_gender, 
        cd.cd_marital_status, 
        cd.cd_education_status, 
        cd.cd_purchase_estimate, 
        cd.cd_credit_rating, 
        c.c_first_name, 
        c.c_last_name, 
        ca.ca_city, 
        ca.ca_state,
        hd.hd_income_band_sk, 
        hd.hd_buy_potential 
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    LEFT JOIN 
        household_demographics hd ON c.c_current_cdemo_sk = hd.hd_demo_sk
    WHERE 
        ca.ca_city IS NOT NULL AND 
        cd.cd_purchase_estimate > 5000
),
sales_data AS (
    SELECT 
        ws_bill_customer_sk, 
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws_order_number) AS order_count 
    FROM 
        web_sales 
    GROUP BY 
        ws_bill_customer_sk
)
SELECT 
    cd.c_customer_id, 
    cd.c_first_name, 
    cd.c_last_name, 
    cd.cd_gender, 
    sd.total_sales,
    sd.order_count,
    cd.hd_buy_potential 
FROM 
    customer_data cd
JOIN 
    sales_data sd ON cd.c_customer_id = sd.ws_bill_customer_sk
WHERE 
    sd.total_sales > 10000 
ORDER BY 
    sd.total_sales DESC
FETCH FIRST 100 ROWS ONLY;
