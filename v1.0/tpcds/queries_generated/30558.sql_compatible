
WITH RECURSIVE sales_hierarchy AS (
    SELECT 
        s_store_sk,
        s_store_name,
        ss_sold_date_sk,
        SUM(ss_net_profit) AS total_profit
    FROM 
        store_sales
    JOIN 
        store ON store_sales.ss_store_sk = store.s_store_sk
    WHERE 
        ss_sold_date_sk >= (SELECT MAX(d_date_sk) - 30 FROM date_dim)
    GROUP BY 
        s_store_sk, s_store_name, ss_sold_date_sk
    UNION ALL
    SELECT 
        sh.s_store_sk,
        sh.s_store_name,
        sh.ss_sold_date_sk,
        SUM(sh.total_profit) * 0.9
    FROM 
        sales_hierarchy sh
    JOIN 
        store s ON sh.s_store_sk = s.s_store_sk
    WHERE 
        sh.total_profit > 0
),
distinct_customers AS (
    SELECT DISTINCT 
        ws_bill_customer_sk
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk > 1000
),
monthly_sales AS (
    SELECT 
        d_year,
        d_month_seq,
        SUM(ws_ext_sales_price) AS total_sales
    FROM 
        web_sales
    JOIN 
        date_dim ON web_sales.ws_sold_date_sk = date_dim.d_date_sk
    GROUP BY 
        d_year, d_month_seq
),
customer_stats AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        COALESCE(SUM(CASE WHEN ws_bill_customer_sk IS NOT NULL THEN 1 ELSE 0 END), 0) AS total_orders,
        COUNT(DISTINCT ws_bill_customer_sk) AS unique_web_orders
    FROM 
        customer c
    LEFT JOIN 
        distinct_customers dc ON c.c_customer_sk = dc.ws_bill_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender
)
SELECT 
    sh.s_store_name,
    sh.ss_sold_date_sk,
    sh.total_profit,
    cs.c_first_name,
    cs.c_last_name,
    cs.total_orders,
    cs.unique_web_orders,
    ms.total_sales,
    ROW_NUMBER() OVER (PARTITION BY sh.s_store_name ORDER BY sh.total_profit DESC) AS rank,
    CASE 
        WHEN cs.total_orders > 0 THEN 'Active'
        ELSE 'Inactive'
    END AS customer_status
FROM 
    sales_hierarchy sh
LEFT JOIN 
    customer_stats cs ON sh.s_store_sk = cs.c_customer_sk
JOIN 
    monthly_sales ms ON EXTRACT(YEAR FROM ms.d_year) = EXTRACT(YEAR FROM TIMESTAMP '2002-10-01 12:34:56') 
                      AND EXTRACT(MONTH FROM ms.d_month_seq) = EXTRACT(MONTH FROM TIMESTAMP '2002-10-01 12:34:56')
ORDER BY 
    sh.total_profit DESC, cs.unique_web_orders DESC;
