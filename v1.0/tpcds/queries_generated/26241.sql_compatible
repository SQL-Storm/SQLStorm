
WITH customer_info AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        ca.ca_city,
        ca.ca_state,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        CONCAT(ca.ca_street_number, ' ', ca.ca_street_name, ' ', ca.ca_street_type) AS full_address,
        CASE 
            WHEN cd.cd_purchase_estimate < 50000 THEN 'Low'
            WHEN cd.cd_purchase_estimate BETWEEN 50000 AND 100000 THEN 'Medium'
            ELSE 'High'
        END AS income_qualified
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
date_info AS (
    SELECT 
        d.d_date,
        EXTRACT(MONTH FROM d.d_date) AS sale_month,
        EXTRACT(YEAR FROM d.d_date) AS sale_year,
        d.d_day_name
    FROM 
        date_dim d
    WHERE 
        d.d_date BETWEEN DATE '2022-01-01' AND DATE '2022-12-31'
),
sales_data AS (
    SELECT 
        ws.cs_quantity AS quantity,
        ws.cs_sales_price AS sales_price,
        ws.cs_ext_sales_price AS ext_sales_price,
        c.full_name,
        d.d_day_name,
        d.sale_month,
        d.sale_year,
        c.income_qualified
    FROM 
        web_sales ws
    JOIN 
        customer_info c ON ws.ws_bill_customer_sk = c.c_customer_id
    JOIN 
        date_info d ON d.d_date = ws.ws_sold_date_sk
)
SELECT 
    full_name,
    sale_month,
    sale_year,
    SUM(quantity) AS total_quantity,
    SUM(ext_sales_price) AS total_sales,
    AVG(sales_price) AS avg_sales_price,
    MAX(sales_price) AS max_sales_price,
    MIN(sales_price) AS min_sales_price,
    income_qualified
FROM 
    sales_data
GROUP BY 
    full_name, sale_month, sale_year, income_qualified
ORDER BY 
    sale_year, sale_month, total_sales DESC;
