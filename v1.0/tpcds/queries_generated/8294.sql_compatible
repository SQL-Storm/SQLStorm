
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_ext_sales_price) AS total_web_sales,
        SUM(cs.cs_ext_sales_price) AS total_catalog_sales,
        SUM(ss.ss_ext_sales_price) AS total_store_sales
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        catalog_sales cs ON c.c_customer_sk = cs.cs_bill_customer_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY 
        c.c_customer_id
),

SalesByGender AS (
    SELECT 
        cd.cd_gender,
        SUM(cs.total_web_sales) AS web_sales_by_gender,
        SUM(cs.total_catalog_sales) AS catalog_sales_by_gender,
        SUM(cs.total_store_sales) AS store_sales_by_gender
    FROM 
        CustomerSales cs
    JOIN 
        customer_demographics cd ON cd.cd_demo_sk = cs.c_customer_id
    GROUP BY 
        cd.cd_gender
)

SELECT 
    cd.cd_gender,
    COALESCE(web_sales_by_gender, 0) AS web_sales,
    COALESCE(catalog_sales_by_gender, 0) AS catalog_sales,
    COALESCE(store_sales_by_gender, 0) AS store_sales,
    (COALESCE(web_sales_by_gender, 0) + 
     COALESCE(catalog_sales_by_gender, 0) + 
     COALESCE(store_sales_by_gender, 0)) AS total_sales
FROM 
    SalesByGender cd
ORDER BY 
    total_sales DESC
FETCH FIRST 10 ROWS ONLY;
