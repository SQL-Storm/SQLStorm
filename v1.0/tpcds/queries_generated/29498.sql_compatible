
WITH AddressDetails AS (
    SELECT 
        ca_address_sk,
        TRIM(CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type, 
                    CASE WHEN ca_suite_number IS NOT NULL THEN CONCAT(' Suite ', ca_suite_number) ELSE '' END)) AS full_address,
        ca_city,
        ca_state
    FROM 
        customer_address
),
DemographicDetails AS (
    SELECT
        cd_demo_sk,
        cd_gender,
        cd_marital_status,
        CONCAT(cd_gender, ' - ', cd_marital_status) AS gender_marital_status
    FROM 
        customer_demographics
),
CustomerDetails AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.gender_marital_status,
        ad.full_address,
        ad.ca_city,
        ad.ca_state
    FROM 
        customer c
    JOIN 
        DemographicDetails cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        AddressDetails ad ON c.c_current_addr_sk = ad.ca_address_sk
),
SalesStats AS (
    SELECT
        ws_bill_customer_sk,
        COUNT(ws_order_number) AS total_orders,
        SUM(ws_net_paid) AS total_sales
    FROM 
        web_sales
    GROUP BY 
        ws_bill_customer_sk
)
SELECT 
    cd.c_customer_sk,
    cd.full_name,
    cd.gender_marital_status,
    cd.full_address,
    cd.ca_city,
    cd.ca_state,
    COALESCE(ss.total_orders, 0) AS total_orders,
    COALESCE(ss.total_sales, 0.00) AS total_sales,
    CONCAT('Total Orders: ', COALESCE(ss.total_orders, 0), 
           ' | Total Sales: $', FORMAT(COALESCE(ss.total_sales, 0.00), 2)) AS sales_summary
FROM 
    CustomerDetails cd
LEFT JOIN 
    SalesStats ss ON cd.c_customer_sk = ss.ws_bill_customer_sk
WHERE 
    cd.ca_state = 'CA'
ORDER BY 
    total_sales DESC
FETCH FIRST 100 ROWS ONLY;
