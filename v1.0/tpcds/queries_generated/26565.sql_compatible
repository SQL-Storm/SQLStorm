
WITH customer_data AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender AS gender,
        cd.cd_marital_status AS marital_status,
        cd.cd_education_status,
        ca.ca_city,
        ca.ca_state,
        SUBSTRING(c.c_email_address, POSITION('@' IN c.c_email_address) + 1) AS domain
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    WHERE 
        cd.cd_gender = 'F' 
        AND cd.cd_marital_status = 'M' 
        AND ca.ca_state IN ('NY', 'CA', 'TX')
),
purchase_data AS (
    SELECT 
        c_customer_sk,
        COUNT(ss_item_sk) AS total_items_bought,
        SUM(ss_sales_price) AS total_spent
    FROM 
        store_sales
    GROUP BY 
        c_customer_sk
)
SELECT 
    cd.full_name,
    cd.gender,
    cd.marital_status,
    pd.total_items_bought,
    pd.total_spent,
    cd.domain
FROM 
    customer_data cd
LEFT JOIN 
    purchase_data pd ON cd.c_customer_id = pd.c_customer_sk
ORDER BY 
    pd.total_spent DESC 
LIMIT 100;
