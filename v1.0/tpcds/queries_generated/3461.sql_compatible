
WITH CTE_Customer_Sales AS (
    SELECT 
        c.c_customer_sk,
        c.c_customer_id,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY SUM(ws.ws_ext_sales_price) DESC) AS order_rank
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_customer_id
),
CTE_Store_Sales AS (
    SELECT 
        s.s_store_sk,
        s.s_store_id,
        SUM(ss.ss_ext_sales_price) AS total_store_sales,
        COUNT(ss.ss_ticket_number) AS total_store_orders
    FROM 
        store s
    LEFT JOIN 
        store_sales ss ON s.s_store_sk = ss.ss_store_sk
    GROUP BY 
        s.s_store_sk, s.s_store_id
),
CTE_Sales_Comparison AS (
    SELECT 
        cs.c_customer_id,
        cs.total_sales AS online_sales,
        COALESCE(ss.total_store_sales, 0) AS store_sales,
        cs.total_sales - COALESCE(ss.total_store_sales, 0) AS sales_difference
    FROM 
        CTE_Customer_Sales cs
    LEFT JOIN 
        CTE_Store_Sales ss ON cs.c_customer_id = ss.s_store_id
)
SELECT 
    customer_id,
    online_sales,
    store_sales,
    sales_difference,
    CASE 
        WHEN sales_difference > 0 THEN 'More online'
        WHEN sales_difference < 0 THEN 'More in-store'
        ELSE 'Equal sales'
    END AS sales_comparison
FROM 
    CTE_Sales_Comparison
WHERE 
    online_sales > 0
ORDER BY 
    sales_difference DESC
LIMIT 10;
