
WITH CustomerDetails AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_salutation, ' ', c.c_first_name, ' ', c.c_last_name) AS full_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
SalesAggregated AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS order_count
    FROM 
        web_sales ws
    JOIN 
        CustomerDetails c ON ws.ws_bill_customer_sk = c.c_customer_id
    GROUP BY 
        c.c_customer_id
),
TopCustomers AS (
    SELECT 
        cd.full_name,
        sa.total_sales,
        sa.order_count,
        ROW_NUMBER() OVER (ORDER BY sa.total_sales DESC) AS rank
    FROM 
        SalesAggregated sa
    JOIN 
        CustomerDetails cd ON sa.c_customer_id = cd.c_customer_id
    WHERE 
        sa.total_sales > 1000
)
SELECT 
    tc.rank,
    tc.full_name,
    tc.total_sales,
    tc.order_count,
    cd.ca_city,
    cd.ca_state,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.cd_education_status
FROM 
    TopCustomers tc
JOIN 
    CustomerDetails cd ON tc.full_name = cd.full_name
WHERE 
    tc.rank <= 10
ORDER BY 
    tc.total_sales DESC;
