
WITH AddressDetails AS (
    SELECT 
        ca_address_id,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip
    FROM customer_address
), 
CustomerDetails AS (
    SELECT 
        c_customer_sk,
        CONCAT(c_first_name, ' ', c_last_name) AS full_name,
        cd_gender,
        cd_marital_status,
        CASE 
            WHEN cd_purchase_estimate < 1000 THEN 'Low'
            WHEN cd_purchase_estimate BETWEEN 1000 AND 5000 THEN 'Medium'
            ELSE 'High'
        END AS purchase_band
    FROM customer
    JOIN customer_demographics ON c_current_cdemo_sk = cd_demo_sk
),
SalesSummary AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_net_paid) AS total_spent,
        COUNT(ws_order_number) AS order_count
    FROM web_sales
    GROUP BY ws_bill_customer_sk
)
SELECT 
    cd.full_name,
    ad.full_address,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.purchase_band,
    COALESCE(ss.total_spent, 0) AS total_spent,
    COALESCE(ss.order_count, 0) AS order_count
FROM CustomerDetails cd
JOIN AddressDetails ad ON cd.c_customer_sk = ad.ca_address_id 
LEFT JOIN SalesSummary ss ON cd.c_customer_sk = ss.ws_bill_customer_sk
WHERE cd.cd_gender = 'M' 
AND cd.purchase_band = 'High'
ORDER BY total_spent DESC;
