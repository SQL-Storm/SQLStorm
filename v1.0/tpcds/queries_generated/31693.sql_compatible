
WITH RECURSIVE sales_rank AS (
    SELECT 
        c.c_customer_id AS customer_id,
        s.s_store_id AS store_id,
        ws.ws_order_number AS order_number,
        SUM(ss.ss_net_profit) AS total_profit,
        RANK() OVER (PARTITION BY c.c_customer_id ORDER BY SUM(ss.ss_net_profit) DESC) AS rank
    FROM 
        customer c
    JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    JOIN 
        store s ON ss.ss_store_sk = s.s_store_sk
    JOIN 
        web_sales ws ON ss.ss_order_number = ws.ws_order_number
    WHERE 
        c.c_current_addr_sk IS NOT NULL
    GROUP BY 
        c.c_customer_id, s.s_store_id, ws.ws_order_number
),
top_sales AS (
    SELECT 
        customer_id,
        store_id,
        total_profit
    FROM 
        sales_rank
    WHERE 
        rank <= 5
),
avg_ship_cost AS (
    SELECT 
        sm.sm_ship_mode_id AS ship_mode_id,
        AVG(ws.ws_ext_ship_cost) AS avg_ship_cost
    FROM 
        web_sales ws
    JOIN 
        ship_mode sm ON ws.ws_ship_mode_sk = sm.sm_ship_mode_sk
    GROUP BY 
        sm.sm_ship_mode_id
)
SELECT 
    t.customer_id,
    t.store_id,
    t.total_profit,
    ac.avg_ship_cost,
    COALESCE(t.total_profit / NULLIF(ac.avg_ship_cost, 0), 0) AS profit_per_ship_cost
FROM 
    top_sales t
LEFT JOIN 
    avg_ship_cost ac ON t.store_id = ac.ship_mode_id
ORDER BY 
    t.total_profit DESC;
