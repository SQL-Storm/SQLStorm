
SELECT 
    CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
    c.c_birth_country,
    ca.ca_city,
    ca.ca_state,
    COUNT(DISTINCT ws.ws_order_number) AS total_orders,
    SUM(ws.ws_net_paid) AS total_spent,
    AVG(DATEDIFF(CURRENT_DATE, d.d_date)) AS avg_days_since_last_order,
    SUBSTR(c.c_email_address, LOCATE('@', c.c_email_address) + 1) AS email_domain,
    CASE 
        WHEN cd.cd_gender = 'M' THEN 'Male' 
        ELSE 'Female' 
    END AS gender,
    GROUP_CONCAT(DISTINCT r.r_reason_desc ORDER BY r.r_reason_desc ASC) AS return_reasons
FROM 
    customer c
JOIN 
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
JOIN 
    customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
LEFT JOIN 
    web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
LEFT JOIN 
    store_returns sr ON c.c_customer_sk = sr.sr_customer_sk
LEFT JOIN 
    catalog_returns cr ON c.c_customer_sk = cr.cr_returning_customer_sk
LEFT JOIN 
    reason r ON sr.sr_reason_sk = r.r_reason_sk OR cr.cr_reason_sk = r.r_reason_sk
JOIN 
    date_dim d ON ws.ws_sold_date_sk = d.d_date_sk OR sr.sr_returned_date_sk = d.d_date_sk OR cr.cr_returned_date_sk = d.d_date_sk
GROUP BY 
    c.c_customer_sk, c.c_first_name, c.c_last_name, c.c_birth_country, ca.ca_city, ca.ca_state, cd.cd_gender
HAVING 
    total_orders > 5 
ORDER BY 
    total_spent DESC
LIMIT 50;
