
WITH RECURSIVE sales_cte AS (
    SELECT 
        ws_item_sk, 
        ws_order_number, 
        SUM(ws_sales_price * ws_quantity) AS total_sales
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk >= (SELECT MIN(d_date_sk) FROM date_dim WHERE d_dow = 1) 
    GROUP BY 
        ws_item_sk, ws_order_number
),

customer_analytics AS (
    SELECT 
        c.c_customer_id,
        cd.cd_gender,
        cd.cd_income_band_sk,
        COUNT(DISTINCT ss.s_store_sk) AS total_stores,
        SUM(ws.ws_net_profit) AS total_profit,
        AVG(ws.ws_net_paid_inc_tax) AS avg_net_paid
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    GROUP BY 
        c.c_customer_id, cd.cd_gender, cd.cd_income_band_sk
),

income_summary AS (
    SELECT 
        hd.ib_income_band_sk,
        SUM(ca.total_profit) AS total_income,
        COUNT(ca.c_customer_id) AS customer_count
    FROM 
        customer_analytics ca
    LEFT JOIN 
        household_demographics hd ON ca.cd_income_band_sk = hd.hd_income_band_sk
    GROUP BY 
        hd.ib_income_band_sk
)

SELECT 
    ca.ca_city, 
    COUNT(DISTINCT c.c_customer_id) AS customer_count,
    SUM(sa.total_sales) AS total_sales,
    MAX(isu.total_income) AS max_income,
    MIN(isu.customer_count) AS min_customers
FROM 
    customer_address ca
JOIN 
    customer c ON ca.ca_address_sk = c.c_current_addr_sk
LEFT JOIN 
    sales_cte sa ON sa.ws_item_sk IN (SELECT i_item_sk FROM item)
LEFT JOIN 
    income_summary isu ON isu.ib_income_band_sk = (SELECT hd_income_band_sk FROM household_demographics WHERE hd_demo_sk = c.c_current_cdemo_sk)
WHERE 
    (c.c_birth_year IS NOT NULL OR c.c_birth_month IS NOT NULL)
    AND (ca.ca_state = 'CA' OR ca.ca_state IS NULL)
GROUP BY 
    ca.ca_city
HAVING 
    AVG(sa.total_sales) > (
        SELECT AVG(total_sales) FROM sales_cte
    )
ORDER BY 
    total_sales DESC, customer_count ASC
FETCH FIRST 10 ROWS ONLY;
