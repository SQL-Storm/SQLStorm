
WITH customer_info AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band_sk,
        cd.cd_purchase_estimate,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_gender, cd.cd_marital_status ORDER BY cd.cd_purchase_estimate DESC) AS purchase_rank
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
top_customers AS (
    SELECT 
        ci.c_customer_sk,
        ci.c_first_name,
        ci.c_last_name,
        ci.cd_income_band_sk,
        ci.cd_purchase_estimate
    FROM 
        customer_info ci
    WHERE 
        ci.purchase_rank <= 10
),
sales_summary AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_net_profit) AS total_net_profit,
        COUNT(DISTINCT ws_order_number) AS total_orders
    FROM 
        web_sales
    GROUP BY 
        ws_bill_customer_sk
)
SELECT 
    tc.c_first_name,
    tc.c_last_name,
    COALESCE(SUM(ss.total_net_profit), 0) AS total_profit,
    COALESCE(SUM(ss.total_orders), 0) AS order_count,
    CASE 
        WHEN SUM(ss.total_net_profit) IS NULL THEN 'No Sales'
        ELSE 'Sales Data Available'
    END AS sales_status
FROM 
    top_customers tc
LEFT JOIN 
    sales_summary ss ON tc.c_customer_sk = ss.ws_bill_customer_sk
GROUP BY 
    tc.c_first_name, tc.c_last_name
ORDER BY 
    total_profit DESC;
