WITH RankedSales AS (
    SELECT 
        ws_ship_date_sk,
        SUM(ws_net_profit) AS total_profit,
        RANK() OVER (PARTITION BY ws_ship_date_sk ORDER BY SUM(ws_net_profit) DESC) AS rank_profit
    FROM web_sales
    GROUP BY ws_ship_date_sk
),
CustomerReturns AS (
    SELECT 
        sr_customer_sk,
        COUNT(*) AS total_returns,
        SUM(sr_return_amt_inc_tax) AS total_return_amount
    FROM store_returns
    GROUP BY sr_customer_sk
),
TopCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        COALESCE(cr.total_returns, 0) AS total_returns,
        COALESCE(cr.total_return_amount, 0) AS total_return_amount
    FROM customer c
    LEFT JOIN CustomerReturns cr ON c.c_customer_sk = cr.sr_customer_sk
)
SELECT 
    t.ws_ship_date_sk,
    t.total_profit,
    tc.c_customer_sk,
    tc.c_first_name,
    tc.c_last_name,
    tc.total_returns,
    tc.total_return_amount
FROM RankedSales t
JOIN TopCustomers tc ON t.total_profit > 1000 
WHERE t.rank_profit <= 10 
ORDER BY t.ws_ship_date_sk DESC, t.total_profit DESC;