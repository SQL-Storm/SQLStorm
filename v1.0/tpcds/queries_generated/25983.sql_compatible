
WITH AddressDetails AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type, 
               CASE WHEN ca_suite_number IS NOT NULL THEN CONCAT(' Suite ', ca_suite_number) ELSE '' END) AS full_address,
        ca_city,
        ca_state,
        ca_zip,
        ca_country 
    FROM 
        customer_address
),
GenderStats AS (
    SELECT 
        cd_gender,
        COUNT(DISTINCT c_customer_id) AS customer_count,
        AVG(cd_dep_count) AS avg_dependents,
        SUM(cd_purchase_estimate) AS total_estimated_purchases
    FROM 
        customer_demographics 
    JOIN 
        customer ON customer.c_current_cdemo_sk = customer_demographics.cd_demo_sk
    GROUP BY 
        cd_gender
),
SalesData AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_sales_price) AS total_sales,
        COUNT(ws_order_number) AS total_orders
    FROM 
        web_sales
    GROUP BY 
        ws_bill_customer_sk
),
CombinedData AS (
    SELECT 
        a.full_address,
        a.ca_city,
        a.ca_state,
        g.cd_gender,
        g.customer_count,
        g.avg_dependents,
        s.total_sales,
        s.total_orders
    FROM 
        AddressDetails a 
    LEFT JOIN 
        GenderStats g ON a.ca_address_sk = g.cd_gender
    LEFT JOIN 
        SalesData s ON a.ca_address_sk = s.ws_bill_customer_sk
)
SELECT 
    full_address,
    ca_city,
    ca_state,
    COUNT(DISTINCT g.cd_gender) AS unique_genders,
    MAX(s.total_sales) AS max_sales, 
    AVG(g.avg_dependents) AS avg_dependents_per_gender
FROM 
    CombinedData
GROUP BY 
    full_address, ca_city, ca_state
ORDER BY 
    ca_city, max_sales DESC
LIMIT 100;
