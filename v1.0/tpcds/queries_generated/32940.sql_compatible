
WITH RECURSIVE SalesSummary AS (
    SELECT 
        ws_sold_date_sk,
        ws_item_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(ws_order_number) AS total_orders,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_ext_sales_price) DESC) AS rnk
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk >= (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2023) - 30
    GROUP BY 
        ws_sold_date_sk, ws_item_sk
),
CustomerDemographics AS (
    SELECT 
        cd_demo_sk,
        cd_gender,
        cd_marital_status,
        cd_income_band_sk,
        COUNT(c_customer_sk) AS customer_count
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        cd_demo_sk, cd_gender, cd_marital_status, cd_income_band_sk
),
IncomeDistribution AS (
    SELECT 
        ib_income_band_sk,
        COUNT(cd.cd_demo_sk) AS income_count
    FROM 
        customer_demographics cd
    LEFT JOIN 
        household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
    LEFT JOIN 
        income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
    GROUP BY 
        ib_income_band_sk
),
StorePerformance AS (
    SELECT 
        s.s_store_sk,
        COUNT(ss_ticket_number) AS total_sales,
        SUM(ss_ext_sales_price) AS total_revenue,
        AVG(ss_net_profit) AS avg_net_profit
    FROM 
        store s
    JOIN 
        store_sales ss ON s.s_store_sk = ss.ss_store_sk
    GROUP BY 
        s.s_store_sk
)
SELECT 
    ss.ws_item_sk,
    ss.total_sales,
    ss.total_orders,
    cd.cd_gender,
    cd.cd_marital_status,
    COALESCE(id.income_count, 0) AS income_count,
    sp.total_sales AS store_sales,
    sp.total_revenue,
    sp.avg_net_profit
FROM 
    SalesSummary ss
JOIN 
    CustomerDemographics cd ON cd.customer_count > 0
LEFT JOIN 
    IncomeDistribution id ON cd.cd_income_band_sk = id.ib_income_band_sk
JOIN 
    StorePerformance sp ON sp.total_sales > 10
WHERE 
    ss.rnk <= 10
ORDER BY 
    ss.total_sales DESC
