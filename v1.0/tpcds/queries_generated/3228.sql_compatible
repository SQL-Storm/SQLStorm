
WITH SalesData AS (
    SELECT
        ws.ws_item_sk,
        ws.ws_order_number,
        ws.ws_sales_price,
        ws.ws_quantity,
        ws.ws_net_profit,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_net_profit DESC) AS rank_profit
    FROM
        web_sales ws
    INNER JOIN
        customer_address ca ON ws.ws_bill_addr_sk = ca.ca_address_sk
    WHERE
        ca.ca_state = 'CA'
        AND ws.ws_sold_date_sk >= (SELECT MAX(d.d_date_sk) FROM date_dim d WHERE d.d_year = 2023)
)
SELECT
    d.d_date,
    SUM(sd.ws_sales_price) AS total_sales,
    COUNT(sd.ws_order_number) AS total_orders,
    AVG(sd.ws_net_profit) AS average_profit
FROM
    SalesData sd
JOIN
    date_dim d ON sd.ws_order_number = d.d_date_sk
WHERE
    sd.rank_profit <= 5
GROUP BY
    d.d_date
UNION
SELECT
    d.d_date,
    0 AS total_sales,
    0 AS total_orders,
    0 AS average_profit
FROM
    date_dim d
WHERE
    d.d_year = 2023
    AND NOT EXISTS (
        SELECT 1
        FROM SalesData sd
        WHERE d.d_date = sd.ws_order_number
    )
ORDER BY
    d.d_date;
