
WITH ranked_sales AS (
    SELECT
        ws_bill_customer_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        DENSE_RANK() OVER (PARTITION BY ws_bill_customer_sk ORDER BY SUM(ws_ext_sales_price) DESC) AS sales_rank
    FROM
        web_sales
    GROUP BY
        ws_bill_customer_sk
),
customer_info AS (
    SELECT
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band_sk,
        ca.ca_city,
        ca.ca_state
    FROM
        customer c
    LEFT JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
top_customers AS (
    SELECT
        ci.c_customer_sk,
        ci.c_first_name,
        ci.c_last_name,
        ci.ca_city,
        ci.ca_state,
        rs.total_sales
    FROM
        customer_info ci
    JOIN
        ranked_sales rs ON ci.c_customer_sk = rs.ws_bill_customer_sk
    WHERE
        rs.sales_rank <= 10
)
SELECT
    tc.c_first_name,
    tc.c_last_name,
    tc.ca_city,
    tc.ca_state,
    COALESCE(tc.total_sales, 0) AS total_sales,
    COALESCE(COUNT(DISTINCT ws.ws_order_number), 0) AS total_orders,
    SUM(ws.ws_net_profit) AS total_profit,
    (SELECT COUNT(*)
     FROM catalog_sales cs
     WHERE cs.cs_bill_customer_sk = tc.c_customer_sk) AS total_catalog_orders
FROM
    top_customers tc
LEFT JOIN
    web_sales ws ON tc.c_customer_sk = ws.ws_bill_customer_sk
GROUP BY
    tc.c_first_name, tc.c_last_name, tc.ca_city, tc.ca_state, tc.total_sales
ORDER BY
    total_sales DESC
FETCH FIRST 20 ROWS ONLY;
