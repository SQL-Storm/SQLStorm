
WITH RankedSales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_paid_inc_tax) AS total_spent,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY SUM(ws.ws_net_paid_inc_tax) DESC) AS rank
    FROM 
        customer AS c
    JOIN 
        web_sales AS ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        ws.ws_sold_date_sk BETWEEN 1 AND 365
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
TopCustomers AS (
    SELECT
        c.c_customer_id,
        cs.rank,
        cs.total_spent,
        COALESCE(cd.cd_gender, 'Unknown') AS gender,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_marital_status
    FROM 
        RankedSales AS cs
    LEFT JOIN 
        customer_demographics AS cd ON cs.c_customer_sk = cd.cd_demo_sk
    JOIN 
        customer AS c ON cs.c_customer_sk = c.c_customer_sk
    WHERE 
        cs.rank <= 10
),
SalesSummary AS (
    SELECT 
        t.d_year,
        SUM(ws.ws_net_profit) AS yearly_profit,
        COUNT(DISTINCT ws.ws_bill_customer_sk) AS distinct_customers,
        AVG(COALESCE(ws.ws_net_paid_inc_tax, 0)) AS average_spent
    FROM 
        web_sales AS ws
    JOIN 
        date_dim AS t ON ws.ws_sold_date_sk = t.d_date_sk
    GROUP BY 
        t.d_year
)
SELECT 
    tc.full_name,
    tc.gender,
    tc.marital_status,
    sb.distinct_customers,
    sb.yearly_profit,
    sb.average_spent
FROM 
    TopCustomers AS tc
JOIN 
    SalesSummary AS sb ON sb.d_year = YEAR(CAST('2002-10-01' AS DATE))
ORDER BY 
    sb.yearly_profit DESC, tc.total_spent DESC;
