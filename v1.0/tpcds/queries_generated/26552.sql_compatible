
SELECT 
    CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_customer_name,
    ca.ca_city AS city,
    ca.ca_state AS state,
    SUBSTRING(c.c_email_address FROM POSITION('@' IN c.c_email_address) + 1) AS email_domain,
    TO_CHAR(d.d_date, 'YYYY-MM-DD') AS formatted_date,
    SUM(CASE 
        WHEN wp.wp_char_count > 100 
        THEN wp.wp_char_count 
        ELSE 0 
    END) AS total_char_count,
    AVG(LENGTH(i.i_item_desc)) AS avg_item_desc_length
FROM 
    customer c
JOIN 
    customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
JOIN 
    web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
JOIN 
    date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
JOIN 
    web_page wp ON ws.ws_web_page_sk = wp.wp_web_page_sk
JOIN 
    item i ON ws.ws_item_sk = i.i_item_sk
WHERE 
    d.d_year = 2023 
    AND ca.ca_state IN ('CA', 'NY', 'TX')
GROUP BY 
    c.c_first_name, c.c_last_name, ca.ca_city, ca.ca_state, SUBSTRING(c.c_email_address FROM POSITION('@' IN c.c_email_address) + 1), d.d_date
HAVING 
    total_char_count > 500
ORDER BY 
    total_char_count DESC, formatted_date;
