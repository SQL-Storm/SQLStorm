
WITH AddressComponents AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip,
        ca_country
    FROM 
        customer_address
),
CustomerDetails AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_salutation, ' ', c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band_sk,
        cd.cd_credit_rating
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
SalesInfo AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_sales_price,
        ws.ws_net_profit,
        ws.ws_sold_date_sk
    FROM 
        web_sales ws
    UNION ALL
    SELECT 
        cs.cs_order_number,
        cs.cs_sales_price,
        cs.cs_net_profit,
        cs.cs_sold_date_sk
    FROM 
        catalog_sales cs
    UNION ALL
    SELECT 
        ss.ss_ticket_number,
        ss.ss_sales_price,
        ss.ss_net_profit,
        ss.ss_sold_date_sk
    FROM 
        store_sales ss
)
SELECT 
    ac.full_address,
    cd.full_name,
    ac.ca_city,
    ac.ca_state,
    SUM(si.ws_sales_price) AS total_sales,
    AVG(si.ws_net_profit) AS average_profit
FROM 
    AddressComponents ac
JOIN 
    CustomerDetails cd ON cd.c_customer_sk IN (
        SELECT DISTINCT sr_customer_sk 
        FROM store_returns 
        WHERE sr_addr_sk = ac.ca_address_sk
    )
JOIN 
    SalesInfo si ON si.ws_order_number IN (
        SELECT DISTINCT sr_ticket_number 
        FROM store_returns 
        WHERE sr_customer_sk = cd.c_customer_sk
    )
WHERE 
    ac.ca_state = 'CA'
GROUP BY 
    ac.full_address, cd.full_name, ac.ca_city, ac.ca_state, cd.cd_gender, cd.cd_marital_status, cd.cd_income_band_sk, cd.cd_credit_rating
ORDER BY 
    total_sales DESC 
LIMIT 10;
