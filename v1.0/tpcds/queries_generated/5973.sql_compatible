
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        SUM(COALESCE(ws.ws_net_paid, 0) + COALESCE(cs.cs_net_paid, 0) + COALESCE(ss.ss_net_paid, 0)) AS total_sales
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        catalog_sales cs ON c.c_customer_sk = cs.cs_bill_customer_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY 
        c.c_customer_id
),
SalesByDate AS (
    SELECT 
        d.d_date,
        SUM(cs.total_sales) AS daily_sales
    FROM 
        date_dim d
    JOIN 
        CustomerSales cs ON d.d_date_sk IN (
            SELECT 
                ws.ws_sold_date_sk FROM web_sales ws WHERE ws.ws_bill_customer_sk IN (SELECT c_customer_sk FROM customer)
            UNION
            SELECT 
                cs.cs_sold_date_sk FROM catalog_sales cs WHERE cs.cs_bill_customer_sk IN (SELECT c_customer_sk FROM customer)
            UNION
            SELECT 
                ss.ss_sold_date_sk FROM store_sales ss WHERE ss.ss_customer_sk IN (SELECT c_customer_sk FROM customer)
        )
    GROUP BY 
        d.d_date
),
TopDays AS (
    SELECT 
        d.d_date,
        d.d_day_name,
        d.d_month_seq,
        d.d_year,
        sd.daily_sales
    FROM 
        SalesByDate sd
    JOIN 
        date_dim d ON sd.d_date = d.d_date
    ORDER BY 
        sd.daily_sales DESC
    LIMIT 10
)
SELECT 
    td.d_date,
    td.d_day_name,
    td.d_month_seq,
    td.d_year,
    td.daily_sales,
    COUNT(DISTINCT cs.c_customer_id) AS unique_customers,
    COUNT(*) AS total_transactions
FROM 
    TopDays td
LEFT JOIN 
    CustomerSales cs ON td.d_date IN (
        SELECT 
            ws.ws_sold_date FROM web_sales ws WHERE ws.ws_bill_customer_sk IN (SELECT c_customer_sk FROM customer)
        UNION
        SELECT 
            cs.cs_sold_date FROM catalog_sales cs WHERE cs.cs_bill_customer_sk IN (SELECT c_customer_sk FROM customer)
        UNION
        SELECT 
            ss.ss_sold_date FROM store_sales ss WHERE ss.ss_customer_sk IN (SELECT c_customer_sk FROM customer)
    )
GROUP BY 
    td.d_date, td.d_day_name, td.d_month_seq, td.d_year, td.daily_sales
ORDER BY 
    td.daily_sales DESC;
