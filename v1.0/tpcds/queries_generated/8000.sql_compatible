
WITH SalesData AS (
    SELECT 
        ws_sold_date_sk,
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_ext_sales_price) AS total_sales,
        SUM(ws_ext_tax) AS total_tax
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk BETWEEN (SELECT d_date_sk FROM date_dim WHERE d_date = '2023-01-01')
        AND (SELECT d_date_sk FROM date_dim WHERE d_date = '2023-12-31')
    GROUP BY 
        ws_sold_date_sk, ws_item_sk
),
ItemStats AS (
    SELECT 
        i_item_sk,
        i_product_name,
        AVG(i_current_price) AS average_price,
        MIN(i_current_price) AS min_price,
        MAX(i_current_price) AS max_price
    FROM 
        item
    GROUP BY 
        i_item_sk, i_product_name
),
SalesSummary AS (
    SELECT 
        sd.ws_sold_date_sk,
        sd.ws_item_sk,
        is.i_product_name,
        sd.total_quantity,
        sd.total_sales,
        sd.total_tax,
        is.average_price,
        is.min_price,
        is.max_price
    FROM 
        SalesData sd
    JOIN 
        ItemStats is ON sd.ws_item_sk = is.i_item_sk
)
SELECT 
    d.d_date,
    ss.i_product_name,
    ss.total_quantity,
    ss.total_sales,
    ss.total_tax,
    ss.average_price,
    ss.min_price,
    ss.max_price,
    (ss.total_sales - ss.total_tax) AS net_revenue
FROM 
    SalesSummary ss
JOIN 
    date_dim d ON ss.ws_sold_date_sk = d.d_date_sk
WHERE 
    d.d_year = 2023
ORDER BY 
    d.d_date, ss.total_sales DESC
FETCH FIRST 100 ROWS ONLY;
