
WITH RankedSales AS (
    SELECT 
        ws.web_site_sk,
        ws.ws_item_sk,
        SUM(ws.ws_net_paid_inc_tax) AS total_sales,
        RANK() OVER(PARTITION BY ws.web_site_sk ORDER BY SUM(ws.ws_net_paid_inc_tax) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023
    GROUP BY 
        ws.web_site_sk, ws.ws_item_sk
),
TopSales AS (
    SELECT 
        web_site_sk,
        ws_item_sk,
        total_sales 
    FROM 
        RankedSales
    WHERE 
        sales_rank <= 10
)
SELECT 
    wa.w_warehouse_id,
    ca.ca_city,
    ts.ws_item_sk,
    ts.total_sales
FROM 
    TopSales ts
JOIN 
    inventory inv ON ts.ws_item_sk = inv.inv_item_sk
JOIN 
    warehouse wa ON inv.inv_warehouse_sk = wa.w_warehouse_sk
JOIN 
    customer_address ca ON wa.w_warehouse_sk = ca.ca_address_sk
WHERE 
    inv.inv_quantity_on_hand > 0
ORDER BY 
    ts.total_sales DESC, wa.w_warehouse_id, ca.ca_city;
