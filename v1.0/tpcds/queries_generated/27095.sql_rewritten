WITH customer_info AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.education_status,
        ca.city,
        ca.state,
        ca.country,
        c.c_email_address,
        c.c_birth_month,
        c.c_birth_day,
        c.c_birth_year,
        CASE 
            WHEN cd.gender = 'M' THEN 'Mr. ' || c.c_first_name
            WHEN cd.gender = 'F' THEN 'Ms. ' || c.c_first_name
            ELSE c.c_first_name
        END AS salutation,
        cast('2002-10-01 12:34:56' as timestamp) AS cast('12:34:56' as time) 
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
item_info AS (
    SELECT 
        i.i_item_id,
        LOWER(i.i_item_desc) AS item_description,
        i.i_current_price,
        i.i_brand,
        CASE 
            WHEN i.i_current_price < 20 THEN 'Budget'
            WHEN i.i_current_price BETWEEN 20 AND 100 THEN 'Mid-Range'
            ELSE 'Luxury'
        END AS price_category
    FROM 
        item i
),
sales_data AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_sales_price,
        ws.ws_quantity,
        c.full_name,
        i.item_description,
        i.price_category,
        d.d_date AS sales_date
    FROM 
        web_sales ws
    JOIN 
        customer_info c ON ws.ws_bill_customer_sk = c.c_customer_id
    JOIN 
        item_info i ON ws.ws_item_sk = i.i_item_id
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
)
SELECT 
    sd.full_name,
    sd.item_description,
    sd.price_category,
    SUM(sd.ws_sales_price * sd.ws_quantity) AS total_sales,
    COUNT(sd.ws_order_number) AS total_orders,
    MONTH(sd.sales_date) AS sales_month,
    CASE 
        WHEN COUNT(sd.ws_order_number) > 10 THEN 'Frequent Buyer'
        ELSE 'Occasional Buyer'
    END AS buyer_status
FROM 
    sales_data sd
WHERE 
    sd.sales_date BETWEEN '2000-01-01' AND '2000-12-31'
GROUP BY 
    sd.full_name, sd.item_description, sd.price_category, MONTH(sd.sales_date)
ORDER BY 
    total_sales DESC
LIMIT 100;