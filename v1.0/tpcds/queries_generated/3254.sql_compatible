
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_paid_inc_tax) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders
    FROM customer c
    LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY c.c_customer_id, c.c_first_name, c.c_last_name
), 
BestCustomers AS (
    SELECT 
        cs.c_customer_id,
        cs.c_first_name,
        cs.c_last_name,
        cs.total_sales,
        cs.total_orders,
        RANK() OVER (ORDER BY cs.total_sales DESC) AS sales_rank
    FROM CustomerSales cs
)
SELECT 
    bc.c_customer_id,
    bc.c_first_name,
    bc.c_last_name,
    COALESCE(bc.total_sales, 0) AS total_sales,
    COALESCE(bc.total_orders, 0) AS total_orders,
    (SELECT COUNT(DISTINCT r.r_reason_desc) 
     FROM store_returns sr
     LEFT JOIN reason r ON sr.sr_reason_sk = r.r_reason_sk
     WHERE sr.sr_customer_sk = bc.c_customer_id) AS unique_return_reasons,
    (SELECT COUNT(DISTINCT p.p_promo_id) 
     FROM promotion p 
     INNER JOIN web_sales ws ON p.p_promo_sk = ws.ws_promo_sk
     WHERE ws.ws_bill_customer_sk = bc.c_customer_id) AS unique_promotions_used
FROM BestCustomers bc
WHERE bc.sales_rank <= 10
ORDER BY total_sales DESC;
