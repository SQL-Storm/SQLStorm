
WITH processed_addresses AS (
    SELECT 
        ca_address_sk,
        CONCAT(SUBSTRING(ca_street_number, 1, 5), ' ', 
               UPPER(SUBSTRING(ca_street_name, 1, 1)), 
               LOWER(SUBSTRING(ca_street_name, 2)), 
               ' ', 
               ca_street_type) AS full_address
    FROM 
        customer_address
    WHERE 
        ca_city LIKE '%ville%'
),
demographic_summary AS (
    SELECT 
        cd_gender,
        COUNT(cd_demo_sk) AS demographic_count,
        AVG(cd_purchase_estimate) AS avg_purchase_estimate,
        STRING_AGG(cd_marital_status, ', ') AS marital_statuses
    FROM 
        customer_demographics
    GROUP BY 
        cd_gender
),
customer_info AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        a.full_address,
        d.avg_purchase_estimate
    FROM 
        customer c
    JOIN 
        processed_addresses a ON c.c_current_addr_sk = a.ca_address_sk
    JOIN 
        demographic_summary d ON c.c_current_cdemo_sk = d.cd_demo_sk
)
SELECT 
    CONCAT(c.c_first_name, ' ', c.c_last_name, ' (', c.c_customer_id, ')') AS customer_full_name,
    c.full_address,
    c.avg_purchase_estimate,
    d.marital_statuses
FROM 
    customer_info c
JOIN 
    demographic_summary d ON c.avg_purchase_estimate = d.avg_purchase_estimate
ORDER BY 
    d.demographic_count DESC;
