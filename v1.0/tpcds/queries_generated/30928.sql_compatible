
WITH RECURSIVE CustomerSales AS (
    SELECT 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        SUM(ws.ws_ext_sales_price) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY SUM(ws.ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        ws.ws_sold_date_sk > (SELECT MAX(d.d_date_sk) 
                               FROM date_dim d 
                               WHERE d.d_year = 2022)
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
SalesSummary AS (
    SELECT 
        cs.c_first_name,
        cs.c_last_name,
        COALESCE(cs.total_sales, 0) AS total_sales,
        ROW_NUMBER() OVER (ORDER BY COALESCE(cs.total_sales, 0) DESC) AS rank_total_sales,
        w.warehouse_sales
    FROM 
        CustomerSales cs
    FULL OUTER JOIN 
        (SELECT 
            s.w_company_name, 
            SUM(ss.ss_ext_sales_price) AS warehouse_sales
         FROM 
            store s
         JOIN 
            store_sales ss ON s.s_store_sk = ss.ss_store_sk
         GROUP BY 
            s.w_company_name 
         HAVING 
            SUM(ss.ss_ext_sales_price) > 1000) w ON w.w_company_name = cs.c_first_name
)
SELECT 
    ss.c_first_name, 
    ss.c_last_name, 
    ss.total_sales, 
    COALESCE(ss.warehouse_sales, 0) AS warehouse_sales,
    (ss.total_sales - COALESCE(ss.warehouse_sales, 0)) AS adjusted_sales
FROM 
    SalesSummary ss
WHERE 
    ss.rank_total_sales <= 10
ORDER BY 
    adjusted_sales DESC;
