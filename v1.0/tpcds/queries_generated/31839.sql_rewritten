WITH RECURSIVE monthly_sales AS (
    SELECT 
        d_year,
        d_month_seq,
        SUM(ss_net_paid) AS total_sales,
        COUNT(DISTINCT ss_ticket_number) AS total_orders
    FROM 
        date_dim
    JOIN 
        store_sales ON d_date_sk = ss_sold_date_sk
    WHERE 
        d_year > 1998
    GROUP BY 
        d_year, d_month_seq
    UNION ALL
    SELECT 
        d_year,
        d_month_seq,
        SUM(ss_net_paid) AS total_sales,
        COUNT(DISTINCT ss_ticket_number) AS total_orders
    FROM 
        monthly_sales
    JOIN 
        date_dim ON d_year = monthly_sales.d_year AND d_month_seq = monthly_sales.d_month_seq + 1
    JOIN 
        store_sales ON d_date_sk = ss_sold_date_sk
    GROUP BY 
        d_year, d_month_seq
),
sales_summary AS (
    SELECT 
        d_year,
        d_month_seq,
        SUM(total_sales) AS overall_sales,
        SUM(total_orders) AS overall_orders
    FROM 
        monthly_sales
    GROUP BY 
        d_year, d_month_seq
),
customer_summary AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        SUM(ws.ws_net_paid) AS total_spent,
        RANK() OVER (PARTITION BY cd.cd_gender ORDER BY SUM(ws.ws_net_paid) DESC) AS spend_rank
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender
),
top_customers AS (
    SELECT 
        cs.* 
    FROM 
        customer_summary cs
    WHERE 
        cs.spend_rank <= 10
)
SELECT 
    s.d_year,
    s.d_month_seq,
    s.overall_sales,
    s.overall_orders,
    tc.c_first_name,
    tc.c_last_name,
    tc.total_spent
FROM 
    sales_summary s
LEFT JOIN 
    top_customers tc ON s.d_month_seq = (cast('2002-10-01' as date) - INTERVAL '1 month')::DATE::month
ORDER BY 
    s.d_year, s.d_month_seq, tc.total_spent DESC;