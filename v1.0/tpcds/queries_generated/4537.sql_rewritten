WITH SalesSummary AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        s.s_store_name,
        SUM(ss_ext_sales_price) AS total_sales,
        COUNT(ss_ticket_number) AS transaction_count,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY SUM(ss_ext_sales_price) DESC) AS rank
    FROM 
        customer c
    JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    JOIN 
        store s ON ss.ss_store_sk = s.s_store_sk
    WHERE 
        ss.ss_sold_date_sk BETWEEN 2458478 AND 2458533 
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, s.s_store_name
),
TopCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        s.s_store_name,
        total_sales,
        transaction_count
    FROM 
        SalesSummary c
    WHERE 
        rank <= 10
),
CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        hd.hd_income_band_sk,
        COUNT(c.c_customer_sk) AS customer_count
    FROM 
        customer_demographics cd
    LEFT JOIN 
        customer c ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        household_demographics hd ON hd.hd_demo_sk = c.c_current_hdemo_sk
    GROUP BY 
        cd.cd_demo_sk, cd.cd_gender, hd.hd_income_band_sk
)
SELECT 
    tc.c_first_name,
    tc.c_last_name,
    tc.s_store_name,
    cd.cd_gender,
    cd.hd_income_band_sk,
    cd.customer_count,
    tc.total_sales,
    CASE 
        WHEN tc.total_sales IS NULL THEN 'No sales'
        ELSE 'Sales recorded'
    END AS sales_status
FROM 
    TopCustomers tc
FULL OUTER JOIN 
    CustomerDemographics cd ON tc.c_customer_sk = cd.cd_demo_sk
WHERE 
    (cd.cd_gender = 'M' OR cd.cd_gender IS NULL)
    AND (cd.hd_income_band_sk BETWEEN 1 AND 5 OR cd.hd_income_band_sk IS NULL)
ORDER BY 
    tc.total_sales DESC NULLS LAST;