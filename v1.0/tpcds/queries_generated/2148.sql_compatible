
WITH RankedSales AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        w.w_warehouse_id,
        SUM(ws.ws_sales_price) AS total_sales,
        RANK() OVER (PARTITION BY c.c_customer_id ORDER BY SUM(ws.ws_sales_price) DESC) AS sales_rank
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        warehouse w ON ws.ws_warehouse_sk = w.w_warehouse_sk
    WHERE 
        ws.ws_sold_date_sk BETWEEN 10000 AND 20000
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name, w.w_warehouse_id
),
CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        hd.hd_income_band_sk,
        COUNT(DISTINCT c.c_customer_id) AS customer_count
    FROM 
        customer_demographics cd
    LEFT JOIN 
        household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
    LEFT JOIN 
        customer c ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        cd.cd_demo_sk, cd.cd_gender, cd.cd_marital_status, hd.hd_income_band_sk
)
SELECT 
    R.c_customer_id,
    R.c_first_name,
    R.c_last_name,
    R.total_sales,
    CD.customer_count,
    CASE 
        WHEN CD.cd_gender = 'M' THEN 'Male'
        WHEN CD.cd_gender = 'F' THEN 'Female'
        ELSE 'Unknown' 
    END AS gender,
    CD.cd_marital_status,
    COALESCE(ib.ib_lower_bound, 0) AS lower_bound,
    COALESCE(ib.ib_upper_bound, 1000000) AS upper_bound
FROM 
    RankedSales R
JOIN 
    CustomerDemographics CD ON R.c_customer_id = CD.cd_demo_sk
LEFT JOIN 
    income_band ib ON CD.hd_income_band_sk = ib.ib_income_band_sk
WHERE 
    R.sales_rank = 1
    AND (CD.cd_marital_status IS NOT NULL AND CD.cd_marital_status != '')
ORDER BY 
    R.total_sales DESC
FETCH FIRST 50 ROWS ONLY;
