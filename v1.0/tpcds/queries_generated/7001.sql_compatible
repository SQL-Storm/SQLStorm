
WITH SalesSummary AS (
    SELECT 
        ws_bill_customer_sk AS customer_id,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws_order_number) AS total_orders,
        AVG(ws_net_profit) AS avg_profit
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk BETWEEN 10000 AND 10050
    GROUP BY 
        ws_bill_customer_sk
),
TopCustomers AS (
    SELECT 
        customer_id,
        total_sales,
        total_orders,
        avg_profit,
        RANK() OVER (ORDER BY total_sales DESC) AS sales_rank
    FROM 
        SalesSummary
)
SELECT 
    c.c_customer_id,
    c.c_first_name,
    c.c_last_name,
    tc.total_sales,
    tc.total_orders,
    tc.avg_profit,
    d.d_date,
    COUNT(sr.ticket_number) AS total_returns
FROM 
    TopCustomers AS tc
JOIN 
    customer AS c ON tc.customer_id = c.c_customer_sk
LEFT JOIN 
    store_returns AS sr ON sr.sr_customer_sk = c.c_customer_sk AND sr.sr_returned_date_sk BETWEEN 10000 AND 10050
JOIN 
    date_dim AS d ON d.d_date_sk = 10000
WHERE 
    tc.sales_rank <= 10
GROUP BY 
    c.c_customer_id, c.c_first_name, c.c_last_name, tc.total_sales, tc.total_orders, tc.avg_profit, d.d_date
ORDER BY 
    tc.total_sales DESC;
