
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        AVG(ws.ws_net_paid_inc_tax) AS average_order_value
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        c.c_current_cdemo_sk IS NOT NULL
    GROUP BY 
        c.c_customer_id
),
HighValueCustomers AS (
    SELECT 
        cs.c_customer_id,
        cs.total_profit,
        cs.order_count,
        cs.average_order_value,
        cd.cd_gender,
        cd.cd_marital_status
    FROM 
        CustomerSales cs
    JOIN 
        customer_demographics cd ON cs.c_customer_id = cd.cd_demo_sk
    WHERE 
        cs.total_profit > 1000
)
SELECT 
    hvc.c_customer_id,
    hvc.total_profit,
    hvc.order_count,
    hvc.average_order_value,
    hvc.cd_gender,
    hvc.cd_marital_status
FROM 
    HighValueCustomers hvc
JOIN 
    (SELECT 
         d.d_year,
         SUM(ws.ws_net_profit) AS yearly_profit
     FROM 
         web_sales ws
     JOIN 
         date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
     GROUP BY 
         d.d_year) yearly_summary ON yearly_summary.yearly_profit > 500000
ORDER BY 
    hvc.total_profit DESC
FETCH FIRST 10 ROWS ONLY;
