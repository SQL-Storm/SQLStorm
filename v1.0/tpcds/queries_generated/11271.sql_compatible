
SELECT 
    c.c_customer_id,
    SUM(ss.ss_net_paid) AS total_sales,
    COUNT(ss.ss_ticket_number) AS total_transactions,
    AVG(ss.ss_net_paid) AS average_transaction_value,
    (SELECT COUNT(DISTINCT ws.web_site_id) FROM web_sales ws WHERE ws.ws_bill_customer_sk = c.c_customer_sk) AS total_websites
FROM 
    customer c
JOIN 
    store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
WHERE 
    ss.ss_sold_date_sk BETWEEN 2400 AND 2450
GROUP BY 
    c.c_customer_id
ORDER BY 
    total_sales DESC
FETCH FIRST 10 ROWS ONLY;
