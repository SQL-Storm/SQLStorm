
WITH CustomerSummary AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_country,
        COUNT(DISTINCT sr.ticket_number) AS total_returns,
        SUM(sr.return_quantity) AS total_return_quantity,
        SUM(sr.return_amt) AS total_return_amount
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        store_returns sr ON c.c_customer_sk = sr.sr_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status, cd.cd_country
),
DateAggregates AS (
    SELECT 
        d.d_year,
        d.d_month_seq,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(ws.ws_order_number) AS total_sales
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY 
        d.d_year, d.d_month_seq
),
TopCustomers AS (
    SELECT 
        cs.c_customer_sk,
        cs.c_first_name,
        cs.c_last_name,
        cs.total_returns,
        cs.total_return_quantity,
        cs.total_return_amount,
        da.total_profit,
        da.total_sales,
        ROW_NUMBER() OVER (ORDER BY cs.total_return_amount DESC) AS rnk
    FROM 
        CustomerSummary cs
    JOIN 
        DateAggregates da ON cs.c_customer_sk IN (SELECT ws_bill_customer_sk FROM web_sales WHERE ws_bill_cdemo_sk IS NOT NULL)
)
SELECT 
    c.c_first_name,
    c.c_last_name,
    c.cd_gender,
    c.cd_marital_status,
    c.total_returns,
    c.total_return_quantity,
    c.total_return_amount,
    d.total_profit,
    d.total_sales
FROM 
    TopCustomers c
JOIN 
    (SELECT * FROM date_dim WHERE total_profit > 10000) d ON c.total_profit > 10000
WHERE 
    c.rnk <= 10
ORDER BY 
    c.total_return_amount DESC;
