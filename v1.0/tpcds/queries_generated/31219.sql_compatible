
WITH RECURSIVE sales_cte AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_net_profit) AS total_profit,
        COUNT(ws_order_number) AS total_orders,
        ROW_NUMBER() OVER (PARTITION BY ws_bill_customer_sk ORDER BY SUM(ws_net_profit) DESC) AS rn
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk > (
            SELECT MAX(d_date_sk) 
            FROM date_dim 
            WHERE d_year = 2022
        )
    GROUP BY 
        ws_bill_customer_sk
), 
item_analysis AS (
    SELECT 
        i.i_item_sk,
        COUNT(DISTINCT ws_order_number) AS order_count,
        AVG(ws_net_profit) AS avg_profit,
        SUM(ws_sales_price) AS total_sales
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        ws_sold_date_sk = (
            SELECT MAX(d_date_sk) 
            FROM date_dim 
            WHERE d_year = 2023
        )
    GROUP BY 
        i.i_item_sk
),
high_performers AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        s.total_profit,
        s.total_orders,
        i.order_count,
        i.avg_profit,
        i.total_sales
    FROM 
        sales_cte s
    JOIN 
        customer c ON s.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        item_analysis i ON s.ws_bill_customer_sk = i.i_item_sk
    WHERE 
        s.total_profit > (
            SELECT AVG(total_profit) 
            FROM sales_cte
        )
    ORDER BY 
        s.total_profit DESC
    LIMIT 50
)
SELECT 
    h.c_customer_id,
    CONCAT(h.c_first_name, ' ', h.c_last_name) AS full_name,
    h.total_profit,
    h.total_orders,
    COALESCE(h.avg_profit, 0) AS avg_profit,
    COALESCE(h.total_sales, 0) AS total_sales,
    CASE 
        WHEN h.total_orders > 10 THEN 'Frequent Buyer'
        WHEN h.total_orders BETWEEN 5 AND 10 THEN 'Occasional Buyer'
        ELSE 'New Buyer'
    END AS buyer_category
FROM 
    high_performers h
LEFT JOIN 
    customer_demographics cd ON h.c_customer_id = cd.cd_demo_sk
WHERE 
    (cd.cd_gender = 'F' OR cd.cd_marital_status IS NULL)
ORDER BY 
    h.total_profit DESC;
