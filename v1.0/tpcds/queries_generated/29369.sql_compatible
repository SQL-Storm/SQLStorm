
WITH AddressStats AS (
    SELECT 
        ca_address_id,
        TRIM(UPPER(ca_street_name)) AS street_name,
        ca_city,
        ca_state,
        ca_zip,
        REPLACE(REPLACE(REPLACE(ca_street_type, 'Street', 'St'), 'Avenue', 'Ave'), 'Boulevard', 'Blvd') AS short_street_type,
        COUNT(ca_address_sk) AS address_count
    FROM 
        customer_address
    GROUP BY 
        ca_address_id,
        TRIM(UPPER(ca_street_name)),
        ca_city,
        ca_state,
        ca_zip
),
CustomerStats AS (
    SELECT 
        c_customer_sk,
        CONCAT(TRIM(c_first_name), ' ', TRIM(c_last_name)) AS full_name,
        cd_gender,
        CONCAT(TRIM(c_birth_day), '/', TRIM(c_birth_month), '/', TRIM(c_birth_year)) AS birth_date,
        CONCAT(ca_city, ', ', ca_state, ' ', ca_zip) AS full_address
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
SalesSummary AS (
    SELECT 
        ws_bill_customer_sk,
        COUNT(ws_order_number) AS total_orders,
        SUM(ws_quantity) AS total_items_sold,
        SUM(ws_net_paid_inc_tax) AS total_revenue
    FROM 
        web_sales
    GROUP BY 
        ws_bill_customer_sk
)
SELECT 
    cs.full_name,
    cs.cd_gender,
    cs.birth_date,
    as.street_name,
    as.ca_city AS city,
    as.ca_state AS state,
    as.ca_zip AS zip,
    ss.total_orders,
    ss.total_items_sold,
    ss.total_revenue,
    ROW_NUMBER() OVER (PARTITION BY cs.cd_gender ORDER BY ss.total_revenue DESC) AS rank
FROM 
    CustomerStats cs
LEFT JOIN 
    AddressStats as ON cs.full_address = CONCAT(as.ca_city, ', ', as.ca_state, ' ', as.ca_zip)
LEFT JOIN 
    SalesSummary ss ON cs.c_customer_sk = ss.ws_bill_customer_sk
WHERE 
    cs.birth_date LIKE '%/%'
ORDER BY 
    cs.cd_gender, ss.total_revenue DESC;
