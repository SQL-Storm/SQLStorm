
WITH SalesSummary AS (
    SELECT 
        ws_sold_date_sk, 
        SUM(ws_sales_price) AS total_sales, 
        COUNT(DISTINCT ws_order_number) AS total_orders,
        COUNT(ws_item_sk) AS item_count
    FROM web_sales 
    GROUP BY ws_sold_date_sk
), 
CustomerDemographics AS (
    SELECT 
        DISTINCT c.c_customer_sk,
        cd.cd_gender, 
        cd.cd_marital_status, 
        ib.ib_income_band_sk,
        ib.ib_lower_bound, 
        ib.ib_upper_bound
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN household_demographics hd ON hd.hd_demo_sk = cd.cd_demo_sk
    LEFT JOIN income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
), 
DailySales AS (
    SELECT 
        dd.d_date AS sale_date, 
        ss.ss_item_sk,
        SUM(ss.ss_sales_price) AS daily_sales,
        COUNT(ss.ss_ticket_number) AS transaction_count
    FROM store_sales ss 
    LEFT JOIN date_dim dd ON ss.ss_sold_date_sk = dd.d_date_sk 
    WHERE dd.d_year = 2023
    GROUP BY dd.d_date, ss.ss_item_sk
)
SELECT 
    cd.cd_gender, 
    cd.cd_marital_status, 
    cd.ib_income_band_sk,
    SUM(daily.daily_sales) AS total_store_sales,
    AVG(daily.transaction_count) AS avg_transactions,
    ss.total_sales AS total_web_sales,
    ss.total_orders
FROM CustomerDemographics cd
LEFT JOIN DailySales daily ON cd.c_customer_sk = daily.ss_item_sk
LEFT JOIN SalesSummary ss ON daily.sale_date = ss.ws_sold_date_sk
GROUP BY 
    cd.cd_gender, 
    cd.cd_marital_status, 
    cd.ib_income_band_sk, 
    ss.total_sales, 
    ss.total_orders
HAVING SUM(daily.daily_sales) > 1000 
   OR cd.cd_gender IS NULL
ORDER BY total_store_sales DESC, cd.cd_gender;
