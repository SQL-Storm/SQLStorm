
WITH RankedSales AS (
    SELECT 
        ws.ws_item_sk,
        ws.ws_order_number,
        ws.ws_sales_price - ws.ws_ext_discount_amt AS net_sales,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_sold_date_sk DESC) AS sales_rank
    FROM web_sales ws
    WHERE ws.ws_sales_price IS NOT NULL AND ws.ws_ext_discount_amt >= 0
),
ItemSales AS (
    SELECT 
        i.i_item_id,
        COALESCE(SUM(rs.net_sales), 0) AS total_net_sales,
        MAX(rs.sales_rank) AS latest_sale_rank
    FROM item i
    LEFT JOIN RankedSales rs ON i.i_item_sk = rs.ws_item_sk
    GROUP BY i.i_item_id
),
IncomeStats AS (
    SELECT 
        d.ib_income_band_sk,
        COUNT(DISTINCT c.c_customer_sk) AS customer_count,
        AVG(hd.hd_vehicle_count) AS avg_vehicle_count,
        COUNT(DISTINCT CASE WHEN c.c_birth_year IS NOT NULL THEN c.c_customer_sk END) AS born_customers
    FROM household_demographics hd
    JOIN customer c ON hd.hd_demo_sk = c.c_current_hdemo_sk
    LEFT JOIN income_band d ON hd.hd_income_band_sk = d.ib_income_band_sk
    GROUP BY d.ib_income_band_sk
),
FinalReport AS (
    SELECT 
        is.i_item_id,
        is.total_net_sales,
        is.latest_sale_rank,
        COALESCE(i.customer_count, 0) AS income_customers,
        COALESCE(i.avg_vehicle_count, 0) AS avg_vehicle
    FROM ItemSales is
    LEFT JOIN IncomeStats i ON i.ib_income_band_sk = (
        SELECT 
            ib.ib_income_band_sk
        FROM income_band ib
        WHERE is.total_net_sales BETWEEN ib.ib_lower_bound AND ib.ib_upper_bound
        LIMIT 1
    )
)
SELECT 
    fr.i_item_id,
    fr.total_net_sales,
    fr.latest_sale_rank,
    fr.income_customers,
    fr.avg_vehicle
FROM FinalReport fr
WHERE fr.latest_sale_rank = 1 AND fr.total_net_sales IS NOT NULL
ORDER BY fr.total_net_sales DESC
LIMIT 10;
