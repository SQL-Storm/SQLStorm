WITH SalesSummary AS (
    SELECT
        ws.web_site_id,
        ws.web_name,
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders
    FROM
        web_sales AS ws
    JOIN
        web_site AS w ON ws.ws_web_site_sk = w.web_site_sk
    JOIN
        date_dim AS d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE
        d.d_year = 2001
        AND d.d_moy IN (11, 12)  
    GROUP BY
        ws.web_site_id, ws.web_name
)

SELECT
    cs.c_customer_id,
    ca.ca_city,
    ca.ca_state,
    cs.c_first_name,
    cs.c_last_name,
    SUM(ws.ws_net_profit) AS customer_profit,
    COUNT(ws.ws_order_number) AS orders_count,
    SUM(s.total_sales) AS total_sales_by_site
FROM
    customer AS cs
JOIN
    customer_address AS ca ON cs.c_current_addr_sk = ca.ca_address_sk
JOIN
    web_sales AS ws ON cs.c_customer_sk = ws.ws_bill_customer_sk
JOIN
    SalesSummary AS s ON ws.ws_web_site_sk = s.web_site_id
WHERE
    cs.c_birth_year = 1980
GROUP BY
    cs.c_customer_id, ca.ca_city, ca.ca_state, cs.c_first_name, cs.c_last_name
ORDER BY
    customer_profit DESC
LIMIT 10;