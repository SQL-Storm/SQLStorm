
WITH CustomerDetails AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country,
        ca.ca_zip 
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
DateDetails AS (
    SELECT 
        d.d_date_id,
        d.d_date,
        d.d_month_seq,
        d.d_year 
    FROM 
        date_dim d
    WHERE 
        d.d_year BETWEEN 2020 AND 2023
),
SalesData AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_item_sk,
        ws.ws_sales_price,
        ws.ws_net_profit,
        ws.ws_sold_date_sk,
        ws.ws_bill_customer_sk 
    FROM 
        web_sales ws
    JOIN 
        DateDetails dd ON ws.ws_sold_date_sk = dd.d_date_id
)

SELECT 
    cd.full_name,
    cd.ca_city,
    cd.ca_state,
    cd.ca_zip,
    COUNT(DISTINCT sd.ws_order_number) AS total_orders,
    SUM(sd.ws_sales_price) AS total_sales,
    SUM(sd.ws_net_profit) AS total_profit
FROM 
    CustomerDetails cd
LEFT JOIN 
    SalesData sd ON cd.c_customer_id = sd.ws_bill_customer_sk
GROUP BY 
    cd.full_name, cd.ca_city, cd.ca_state, cd.ca_zip
ORDER BY 
    total_sales DESC 
FETCH FIRST 50 ROWS ONLY;
