
WITH RECURSIVE SalesSummary AS (
    SELECT 
        ws_sold_date_sk, 
        ws_item_sk, 
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_net_profit) AS total_net_profit,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_net_profit) DESC) AS rn
    FROM 
        web_sales
    GROUP BY 
        ws_sold_date_sk, 
        ws_item_sk
),
TopSellingItems AS (
    SELECT 
        ws_item_sk,
        total_quantity,
        total_net_profit
    FROM 
        SalesSummary
    WHERE 
        rn <= 10
),
CustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        SUM(COALESCE(ws.ws_net_profit, 0)) AS total_spent
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        cd.cd_gender, 
        cd.cd_marital_status
),
JoinedData AS (
    SELECT 
        ci.c_first_name,
        ci.c_last_name,
        ci.cd_gender,
        ci.cd_marital_status,
        TSI.ws_item_sk,
        TSI.total_net_profit
    FROM 
        CustomerInfo ci
    JOIN 
        TopSellingItems TSI ON ci.total_spent > 1000
)
SELECT 
    jd.c_first_name,
    jd.c_last_name,
    jd.cd_gender,
    jd.cd_marital_status,
    COUNT(jd.ws_item_sk) AS items_purchased,
    AVG(TSI.total_net_profit) AS avg_profit
FROM 
    JoinedData jd
LEFT JOIN 
    TopSellingItems TSI ON jd.ws_item_sk = TSI.ws_item_sk
GROUP BY 
    jd.c_first_name, 
    jd.c_last_name, 
    jd.cd_gender, 
    jd.cd_marital_status
ORDER BY 
    avg_profit DESC 
LIMIT 50;
