
WITH ranked_sales AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        RANK() OVER (PARTITION BY ws.ws_item_sk ORDER BY SUM(ws.ws_sales_price) DESC) AS rank_sales
    FROM 
        web_sales ws
    INNER JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        i.i_current_price IS NOT NULL
    GROUP BY 
        ws.ws_order_number, ws.ws_item_sk
),
customer_returns AS (
    SELECT 
        cr.returned_customer_sk,
        COUNT(DISTINCT cr.cr_order_number) AS total_returns,
        SUM(cr.cr_return_amount) AS total_return_amount,
        MAX(COALESCE(cr.cr_return_ship_cost, 0)) AS max_return_ship_cost
    FROM 
        catalog_returns cr
    GROUP BY 
        cr.returned_customer_sk
),
top_customers AS (
    SELECT 
        c.c_customer_id,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_credit_rating,
        COALESCE(cr.total_returns, 0) AS total_returns,
        COALESCE(cr.total_return_amount, 0) AS total_return_amount
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        customer_returns cr ON c.c_customer_sk = cr.returned_customer_sk
    WHERE 
        cd.cd_marital_status IN ('M', 'S') AND
        (cd.cd_gender IS NULL OR cd.cd_gender = 'F')
)
SELECT 
    tc.c_customer_id,
    tc.cd_gender,
    tc.cd_marital_status,
    COUNT(DISTINCT rs.ws_order_number) AS orders_count,
    SUM(rs.total_quantity) AS total_items_sold,
    MAX(DATEDIFF(d.d_date, DATEADD(DAY, -30, CAST('2002-10-01' AS DATE)))) AS days_since_last_order,
    STRING_AGG(DISTINCT CASE WHEN (rs.total_quantity > 10 OR tc.total_return_amount > 500) THEN i.i_item_desc END, ', ') AS recommendations
FROM 
    top_customers tc
LEFT JOIN 
    ranked_sales rs ON tc.c_customer_id = rs.ws_order_number
LEFT JOIN 
    item i ON rs.ws_item_sk = i.i_item_sk
JOIN 
    date_dim d ON d.d_date_sk = rs.ws_sold_date_sk
WHERE 
    (tc.total_returns < 5 OR tc.total_return_amount > 1000)
GROUP BY 
    tc.c_customer_id, tc.cd_gender, tc.cd_marital_status
ORDER BY 
    total_items_sold DESC, days_since_last_order ASC;
