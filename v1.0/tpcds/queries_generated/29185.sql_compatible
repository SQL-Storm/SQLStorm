
WITH RankedCustomers AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_gender ORDER BY cd.cd_purchase_estimate DESC) AS rank
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
TopCustomers AS (
    SELECT 
        c_customer_sk,
        full_name,
        cd_gender,
        cd_marital_status,
        cd_education_status,
        cd_purchase_estimate
    FROM 
        RankedCustomers
    WHERE 
        rank <= 10
)
SELECT 
    tc.full_name,
    tc.cd_gender,
    tc.cd_marital_status,
    tc.cd_education_status,
    tc.cd_purchase_estimate,
    COUNT(wr.wr_item_sk) AS total_web_returns,
    COUNT(sr.sr_item_sk) AS total_store_returns
FROM 
    TopCustomers tc
LEFT JOIN 
    web_returns wr ON wr.wr_returning_customer_sk = tc.c_customer_sk
LEFT JOIN 
    store_returns sr ON sr.sr_returning_customer_sk = tc.c_customer_sk
GROUP BY 
    tc.c_customer_sk,
    tc.full_name,
    tc.cd_gender,
    tc.cd_marital_status,
    tc.cd_education_status,
    tc.cd_purchase_estimate
ORDER BY 
    tc.cd_purchase_estimate DESC, 
    tc.full_name;
