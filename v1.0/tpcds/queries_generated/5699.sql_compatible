
WITH sales_data AS (
    SELECT 
        c.c_customer_id AS customer_id,
        c.c_first_name AS first_name,
        c.c_last_name AS last_name,
        ss.ss_sales_price,
        ss.ss_quantity,
        w.w_warehouse_name AS warehouse_name,
        d.d_date AS date,
        sm.sm_type AS ship_mode,
        SUM(ss.ss_sales_price * ss.ss_quantity) AS total_sales
    FROM 
        customer c
    JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    JOIN 
        warehouse w ON ss.ss_store_sk = w.w_warehouse_sk
    JOIN 
        date_dim d ON ss.ss_sold_date_sk = d.d_date_sk
    JOIN 
        ship_mode sm ON ss.ss_ship_mode_sk = sm.sm_ship_mode_sk
    WHERE 
        d.d_year = 2023 AND 
        d.d_moy IN (1, 2, 3) 
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name, w.w_warehouse_name, d.d_date, sm.sm_type
),
ranked_sales AS (
    SELECT 
        customer_id,
        first_name,
        last_name,
        warehouse_name,
        date,
        ship_mode,
        total_sales,
        RANK() OVER (PARTITION BY warehouse_name ORDER BY total_sales DESC) AS sales_rank
    FROM 
        sales_data
)
SELECT 
    customer_id,
    first_name,
    last_name,
    total_sales,
    warehouse_name,
    date,
    ship_mode
FROM 
    ranked_sales
WHERE 
    sales_rank <= 10
ORDER BY 
    warehouse_name, total_sales DESC;
