
WITH customer_sales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_paid) AS total_spent,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM customer c
    JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE ws.ws_sold_date_sk BETWEEN 1000 AND 2000
    GROUP BY c.c_customer_id
),
demographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        ib.ib_lower_bound,
        ib.ib_upper_bound
    FROM customer_demographics cd
    LEFT JOIN household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
    LEFT JOIN income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
),
high_value_customers AS (
    SELECT 
        cs.c_customer_id,
        cs.total_spent,
        DENSE_RANK() OVER (ORDER BY cs.total_spent DESC) AS spending_rank
    FROM customer_sales cs
    WHERE cs.total_spent IS NOT NULL
)
SELECT 
    hvc.c_customer_id,
    hvc.total_spent,
    CASE 
        WHEN d.cd_gender = 'M' THEN 'Male'
        WHEN d.cd_gender = 'F' THEN 'Female'
        ELSE 'Unknown'
    END AS gender,
    d.ib_lower_bound,
    d.ib_upper_bound
FROM high_value_customers hvc
LEFT JOIN demographics d ON hvc.c_customer_id = d.cd_demo_sk
WHERE hvc.spending_rank <= 10
UNION ALL
SELECT 
    NULL AS c_customer_id,
    SUM(ws.ws_net_paid) AS total_spent,
    'Total' AS gender,
    NULL AS ib_lower_bound,
    NULL AS ib_upper_bound
FROM web_sales ws
WHERE ws.ws_sold_date_sk BETWEEN 1000 AND 2000
GROUP BY NULL
HAVING SUM(ws.ws_net_paid) > 100000
ORDER BY total_spent DESC;
