
WITH AddressStats AS (
    SELECT 
        ca.city AS address_city,
        COUNT(DISTINCT ca.ca_address_sk) AS address_count,
        COUNT(DISTINCT c.c_customer_sk) AS customer_count,
        STRING_AGG(DISTINCT CONCAT(c.c_first_name, ' ', c.c_last_name), ', ') AS customer_names
    FROM 
        customer_address ca
    JOIN 
        customer c ON ca.ca_address_sk = c.c_current_addr_sk
    GROUP BY 
        ca.city
), DemographicStats AS (
    SELECT 
        cd.cd_gender,
        COUNT(DISTINCT cd.cd_demo_sk) AS demographic_count,
        AVG(cd.cd_purchase_estimate) AS avg_purchase_estimate
    FROM 
        customer_demographics cd
    GROUP BY 
        cd.cd_gender
), CombinedStats AS (
    SELECT 
        a.address_city,
        a.address_count,
        a.customer_count,
        a.customer_names,
        d.cd_gender,
        d.demographic_count,
        d.avg_purchase_estimate
    FROM 
        AddressStats a
    LEFT JOIN 
        DemographicStats d ON a.customer_count > 0
)
SELECT 
    address_city,
    address_count,
    customer_count,
    customer_names,
    cd_gender,
    demographic_count,
    avg_purchase_estimate
FROM 
    CombinedStats
WHERE 
    address_count > 5
ORDER BY 
    customer_count DESC, address_city;
