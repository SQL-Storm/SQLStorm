
WITH sales_summary AS (
    SELECT 
        d.d_year, 
        c.c_gender, 
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        AVG(ws.ws_net_profit) AS avg_net_profit
    FROM 
        web_sales ws
    JOIN 
        customer c ON ws.ws_ship_customer_sk = c.c_customer_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        d.d_year BETWEEN 2019 AND 2023 
        AND c.c_preferred_cust_flag = 'Y'
        AND i.i_current_price > 20.00
    GROUP BY 
        d.d_year, c.c_gender
), 
warehouse_summary AS (
    SELECT 
        w.w_warehouse_id,
        SUM(inv.inv_quantity_on_hand) AS total_quantity_on_hand
    FROM 
        warehouse w
    JOIN 
        inventory inv ON w.w_warehouse_sk = inv.inv_warehouse_sk
    GROUP BY 
        w.w_warehouse_id
)
SELECT 
    ss.d_year,
    ss.c_gender,
    ss.total_sales,
    ss.order_count,
    ss.avg_net_profit,
    ws.total_quantity_on_hand
FROM 
    sales_summary ss
JOIN 
    warehouse_summary ws ON ss.d_year = ws.w_warehouse_id
ORDER BY 
    ss.d_year, ss.c_gender DESC;
