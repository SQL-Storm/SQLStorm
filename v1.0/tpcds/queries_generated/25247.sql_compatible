
WITH CustomerInfo AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating,
        cd.dep_count AS dependency_count,
        SUBSTR(c.c_email_address, 1, 10) AS email_prefix
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
DateInfo AS (
    SELECT 
        d.d_date,
        d.d_day_name,
        d.d_month_seq,
        d.d_year
    FROM 
        date_dim d
    WHERE 
        d.d_year = 2023
),
SalesInfo AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_quantity,
        ws.ws_sales_price,
        ws.ws_net_profit,
        ws.ws_bill_customer_sk
    FROM 
        web_sales ws
    UNION ALL
    SELECT 
        cs.cs_order_number,
        cs.cs_quantity,
        cs.cs_sales_price,
        cs.cs_net_profit,
        cs.cs_bill_customer_sk
    FROM 
        catalog_sales cs
    UNION ALL
    SELECT 
        ss.ss_ticket_number,
        ss.ss_quantity,
        ss.ss_sales_price,
        ss.ss_net_profit,
        ss.ss_customer_sk
    FROM 
        store_sales ss
)
SELECT 
    ci.full_name,
    ci.ca_city,
    ci.ca_state,
    di.d_day_name,
    di.d_month_seq,
    di.d_year,
    SUM(si.ws_quantity) AS total_quantity,
    SUM(si.ws_sales_price) AS total_sales,
    SUM(si.ws_net_profit) AS total_profit,
    COUNT(si.ws_order_number) AS order_count
FROM 
    CustomerInfo ci
JOIN 
    DateInfo di ON di.d_date BETWEEN DATE '2023-01-01' AND DATE '2023-12-31'
JOIN 
    SalesInfo si ON ci.c_customer_id = si.ws_bill_customer_sk
GROUP BY 
    ci.full_name, ci.ca_city, ci.ca_state, di.d_day_name, di.d_month_seq, di.d_year
ORDER BY 
    ci.ca_state, total_profit DESC
FETCH FIRST 100 ROWS ONLY;
