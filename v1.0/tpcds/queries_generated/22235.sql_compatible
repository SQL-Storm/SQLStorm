
WITH RecursiveSales AS (
    SELECT 
        ws.web_site_sk,
        ws.ws_order_number,
        SUM(ws.ws_net_profit) AS total_net_profit
    FROM web_sales ws
    WHERE ws.ws_sold_date_sk BETWEEN (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2023) - 30
        AND (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2023)
    GROUP BY ws.web_site_sk, ws.ws_order_number
    HAVING SUM(ws.ws_net_profit) IS NOT NULL
), 
CustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        COALESCE(cd.cd_dep_count, 0) AS dependent_count,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_gender ORDER BY cd.cd_purchase_estimate DESC) AS rank_by_purchases
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE cd.cd_marital_status IS NOT NULL
), 
ReturnsAnalysis AS (
    SELECT 
        sr_customer_sk,
        SUM(sr_return_quantity) AS total_returns,
        COUNT(DISTINCT sr_ticket_number) AS distinct_tickets,
        AVG(sr_return_amt_inc_tax) AS avg_return_value
    FROM store_returns
    GROUP BY sr_customer_sk
),
ProfitSummary AS (
    SELECT 
        web_site_sk,
        COUNT(DISTINCT ws_order_number) AS order_count,
        SUM(total_net_profit) AS cumulative_profit
    FROM RecursiveSales
    GROUP BY web_site_sk
)
SELECT
    ci.c_customer_sk,
    ci.cd_gender,
    ci.cd_marital_status,
    ci.dependent_count,
    COALESCE(ra.total_returns, 0) AS total_returns,
    COALESCE(ra.distinct_tickets, 0) AS distinct_tickets,
    COALESCE(ra.avg_return_value, 0) AS avg_return_value,
    COALESCE(ps.order_count, 0) AS order_count,
    COALESCE(ps.cumulative_profit, 0) AS cumulative_profit
FROM CustomerInfo ci
LEFT JOIN ReturnsAnalysis ra ON ci.c_customer_sk = ra.sr_customer_sk
FULL OUTER JOIN ProfitSummary ps ON ci.c_customer_sk = ps.web_site_sk
WHERE (ci.rank_by_purchases <= 10 OR COALESCE(ra.total_returns, 0) > 5)
  AND (COALESCE(ps.cumulative_profit, 0) > 1000 OR ci.cd_gender IS NULL)
ORDER BY ci.cd_gender DESC, ps.cumulative_profit DESC;
