
WITH sales_summary AS (
    SELECT
        ws.web_site_id,
        ws.web_name,
        w.warehouse_id,
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        AVG(ws.ws_net_profit) AS avg_profit
    FROM
        web_sales ws
    JOIN
        web_site w ON ws.ws_web_site_sk = w.web_site_sk
    JOIN
        warehouse ww ON ws.ws_warehouse_sk = ww.warehouse_sk
    WHERE
        ws.ws_sold_date_sk BETWEEN (SELECT MIN(d_date_sk) FROM date_dim WHERE d_date BETWEEN '2023-01-01' AND '2023-01-31') 
        AND (SELECT MAX(d_date_sk) FROM date_dim WHERE d_date BETWEEN '2023-01-01' AND '2023-01-31')
    GROUP BY
        ws.web_site_id, w.warehouse_id, ws.web_name
), customer_summary AS (
    SELECT
        c.c_customer_id,
        cd.cd_gender,
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM
        customer c
    LEFT JOIN
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY
        c.c_customer_id, cd.cd_gender
), combined_summary AS (
    SELECT
        ss.web_site_id,
        ss.web_name,
        ss.warehouse_id,
        ss.total_sales,
        COALESCE(cs.total_sales, 0) AS customer_sales,
        COALESCE(cs.order_count, 0) AS order_count,
        ss.avg_profit
    FROM
        sales_summary ss
    LEFT JOIN
        customer_summary cs ON ss.web_site_id = cs.c_customer_id
)
SELECT
    web_site_id,
    web_name,
    warehouse_id,
    total_sales,
    customer_sales,
    order_count,
    avg_profit
FROM
    combined_summary
WHERE
    total_sales > 1000
ORDER BY
    total_sales DESC, avg_profit DESC;
