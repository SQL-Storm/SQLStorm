
WITH SalesData AS (
    SELECT 
        ws.ws_item_sk,
        ws.ws_order_number,
        ws.ws_sales_price,
        ws.ws_discount_amt,
        ws.ws_ext_sales_price,
        ws.ws_net_profit,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_sold_date_sk DESC) AS recent_sales_rank
    FROM web_sales ws
    WHERE ws.ws_sold_date_sk >= (SELECT MAX(d.d_date_sk) - 30 FROM date_dim d)
),
StoreData AS (
    SELECT 
        s.s_store_sk,
        s.s_store_name,
        SUM(ss.ss_net_profit) AS total_store_profit
    FROM store s
    LEFT JOIN store_sales ss ON s.s_store_sk = ss.ss_store_sk
    GROUP BY s.s_store_sk, s.s_store_name
),
TopStores AS (
    SELECT 
        sd.s_store_sk,
        sd.s_store_name,
        sd.total_store_profit,
        RANK() OVER (ORDER BY sd.total_store_profit DESC) AS store_rank
    FROM StoreData sd
)
SELECT 
    c.c_customer_id,
    ca.ca_city,
    SUM(sd.ws_net_profit) AS total_net_profit,
    COUNT(sd.ws_order_number) AS total_orders,
    SUM(sd.ws_discount_amt) AS total_discounts,
    COALESCE(MAX(CASE WHEN sd.recent_sales_rank = 1 THEN sd.ws_sales_price END), 0) AS recent_sales_price,
    ts.total_store_profit AS store_profit
FROM customer c
JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
JOIN SalesData sd ON c.c_customer_sk = sd.ws_bill_customer_sk
JOIN TopStores ts ON sd.ws_item_sk IN (
    SELECT cs.cs_item_sk 
    FROM catalog_sales cs 
    WHERE cs.cs_net_paid > 100 AND cs.cs_coupon_amt IS NULL
)
WHERE ca.ca_state = 'CA'
GROUP BY c.c_customer_id, ca.ca_city, ts.total_store_profit
HAVING SUM(sd.ws_net_profit) > 1000
ORDER BY total_net_profit DESC
