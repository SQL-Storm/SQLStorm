
WITH SalesData AS (
    SELECT 
        ws.web_site_id,
        ws.web_name,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_sales_price * ws.ws_quantity) AS total_sales,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        COUNT(DISTINCT c.c_customer_id) AS unique_customers
    FROM 
        web_sales ws
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    JOIN 
        web_site ws ON ws.web_site_sk = ws.ws_web_site_sk
    WHERE 
        d.d_year = 2023
        AND d.d_month_seq BETWEEN 1 AND 6
    GROUP BY 
        ws.web_site_id, ws.web_name
),
CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        SUM(sd.total_sales) AS sales_by_gender_and_marital_status
    FROM 
        SalesData sd
    JOIN 
        customer c ON sd.unique_customers = c.c_customer_id
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        cd.cd_demo_sk, cd.cd_gender, cd.cd_marital_status
)

SELECT 
    wd.web_site_id,
    wd.web_name,
    SUM(cd.sales_by_gender_and_marital_status) AS total_sales_by_gender_and_marital_status,
    COUNT(DISTINCT c.c_customer_id) AS total_unique_customers,
    (SUM(sd.total_sales) / NULLIF(NULLIF(COUNT(DISTINCT c.c_customer_id), 0), 0)) AS avg_sales_per_customer
FROM 
    SalesData sd
JOIN 
    CustomerDemographics cd ON cd.sales_by_gender_and_marital_status = sd.total_sales
JOIN 
    web_site wd ON sd.web_site_id = wd.web_site_id
JOIN 
    customer c ON c.c_current_cdemo_sk = cd.cd_demo_sk
GROUP BY 
    wd.web_site_id, wd.web_name
ORDER BY 
    total_sales_by_gender_and_marital_status DESC;
