
WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        c.c_customer_id,
        SUM(ws.ws_net_paid) AS total_web_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM customer c
    JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE ws.ws_sold_date_sk IN (SELECT d_date_sk FROM date_dim WHERE d_year = 2023)
    GROUP BY c.c_customer_sk, c.c_customer_id
),
StoreSales AS (
    SELECT 
        s.s_store_sk,
        SUM(ss.ss_net_paid) AS total_store_sales
    FROM store s
    JOIN store_sales ss ON s.s_store_sk = ss.ss_store_sk
    WHERE ss.ss_sold_date_sk IN (SELECT d_date_sk FROM date_dim WHERE d_year = 2023)
    GROUP BY s.s_store_sk
),
SalesComparison AS (
    SELECT 
        cs.c_customer_id,
        cs.total_web_sales,
        ss.total_store_sales,
        (cs.total_web_sales - COALESCE(ss.total_store_sales, 0)) AS sales_difference
    FROM CustomerSales cs
    LEFT JOIN StoreSales ss ON cs.c_customer_id = ss.s_store_sk
)
SELECT 
    c.c_customer_id,
    COALESCE(cs.total_web_sales, 0) AS total_web_sales,
    COALESCE(ss.total_store_sales, 0) AS total_store_sales,
    CASE 
        WHEN cs.total_web_sales IS NULL THEN 'No Online Purchases'
        WHEN ss.total_store_sales IS NULL THEN 'No In-Store Purchases'
        ELSE 'Both'
    END AS purchase_type,
    RANK() OVER (ORDER BY (cs.total_web_sales - COALESCE(ss.total_store_sales, 0)) DESC) AS sales_rank
FROM SalesComparison c
ORDER BY sales_rank
LIMIT 10;
