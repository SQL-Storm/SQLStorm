
WITH customer_sales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_paid) AS total_web_sales,
        SUM(cs.cs_net_paid) AS total_catalog_sales,
        SUM(ss.ss_net_paid) AS total_store_sales
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        catalog_sales cs ON c.c_customer_sk = cs.cs_bill_customer_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY 
        c.c_customer_id
),
sales_summary AS (
    SELECT 
        SUM(total_web_sales) AS total_web_sales,
        SUM(total_catalog_sales) AS total_catalog_sales,
        SUM(total_store_sales) AS total_store_sales,
        COUNT(*) AS customer_count
    FROM 
        customer_sales
),
average_sales AS (
    SELECT 
        total_web_sales / customer_count AS avg_web_sales,
        total_catalog_sales / customer_count AS avg_catalog_sales,
        total_store_sales / customer_count AS avg_store_sales
    FROM 
        sales_summary
)
SELECT 
    a.avg_web_sales, 
    a.avg_catalog_sales, 
    a.avg_store_sales, 
    TO_CHAR(d.d_date, 'YYYY-MM') AS sales_month
FROM 
    average_sales a
JOIN 
    date_dim d ON d.d_date_sk = (SELECT MAX(d_date_sk) FROM date_dim) 
WHERE 
    a.avg_web_sales > 0 OR a.avg_catalog_sales > 0 OR a.avg_store_sales > 0
ORDER BY 
    sales_month DESC
LIMIT 10;
