
WITH CustomerInfo AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        hd.hd_income_band_sk,
        ib.ib_lower_bound,
        ib.ib_upper_bound
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        household_demographics hd ON hd.hd_demo_sk = cd.cd_demo_sk
    JOIN 
        income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
),
SalesInfo AS (
    SELECT 
        ws.ws_web_page_sk AS page_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
    WHERE 
        ws.ws_sold_date_sk IN (SELECT d_date_sk FROM date_dim WHERE d_year = 2023)
    GROUP BY 
        ws.ws_web_page_sk
),
CombinedInfo AS (
    SELECT 
        ci.c_customer_id,
        ci.c_first_name,
        ci.c_last_name,
        ci.cd_gender,
        si.page_sk,
        si.total_quantity,
        si.total_profit,
        si.total_orders
    FROM 
        CustomerInfo ci
    JOIN 
        SalesInfo si ON ci.c_customer_id = (
            SELECT 
                s.ws_bill_customer_sk
            FROM 
                web_sales s
            WHERE 
                s.ws_web_page_sk = si.page_sk
            FETCH FIRST 1 ROW ONLY
        )
    ORDER BY 
        si.total_profit DESC
)
SELECT 
    c.c_first_name,
    c.c_last_name,
    c.cd_gender,
    SUM(s.total_profit) AS total_profit,
    SUM(s.total_quantity) AS total_quantity,
    COUNT(s.page_sk) AS number_of_pages_viewed
FROM 
    CombinedInfo s
JOIN 
    CustomerInfo c ON s.c_customer_id = c.c_customer_id
GROUP BY 
    c.c_first_name, 
    c.c_last_name, 
    c.cd_gender
HAVING 
    SUM(s.total_profit) > 1000
ORDER BY 
    total_profit DESC;
