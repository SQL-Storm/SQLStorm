WITH CustomerStats AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        COUNT(DISTINCT ss.ticket_number) AS store_sales_count,
        SUM(ss.ss_net_paid) AS total_store_sales,
        SUM(CASE WHEN ss.ss_sold_date_sk = cast('2002-10-01' as date) THEN ss.ss_net_paid ELSE 0 END) AS todays_store_sales
    FROM 
        customer c
    LEFT JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        cd.cd_gender, 
        cd.cd_marital_status
),
WebSalesStats AS (
    SELECT 
        ws_bill_customer_sk,
        COUNT(DISTINCT ws_order_number) AS web_sales_count,
        SUM(ws_net_paid) AS total_web_sales,
        SUM(CASE WHEN d.d_date = cast('2002-10-01' as date) THEN ws_net_paid ELSE 0 END) AS todays_web_sales
    FROM 
        web_sales ws
    JOIN date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY 
        ws_bill_customer_sk
),
CombinedStats AS (
    SELECT 
        cs.c_customer_sk,
        cs.c_first_name,
        cs.c_last_name,
        cs.cd_gender,
        cs.cd_marital_status,
        COALESCE(cs.store_sales_count, 0) AS store_sales_count,
        COALESCE(cs.total_store_sales, 0) AS total_store_sales,
        COALESCE(ws.web_sales_count, 0) AS web_sales_count,
        COALESCE(ws.total_web_sales, 0) AS total_web_sales,
        (COALESCE(cs.todays_store_sales, 0) + COALESCE(ws.todays_web_sales, 0)) AS total_todays_sales
    FROM 
        CustomerStats cs
    FULL OUTER JOIN WebSalesStats ws ON cs.c_customer_sk = ws.ws_bill_customer_sk
)
SELECT 
    cs.*,
    CASE 
        WHEN total_todays_sales > 1000 THEN 'High Sales'
        WHEN total_todays_sales BETWEEN 500 AND 1000 THEN 'Medium Sales'
        ELSE 'Low Sales' 
    END AS sales_category,
    (SELECT COUNT(*) FROM customer WHERE c_current_addr_sk IS NULL) AS customers_without_address
FROM 
    CombinedStats cs
WHERE 
    (cd_gender = 'F' OR cd_marital_status = 'M')
ORDER BY 
    total_store_sales DESC, 
    total_web_sales DESC;