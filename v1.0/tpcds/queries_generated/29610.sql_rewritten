WITH FilteredCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        d.d_date,
        d.d_month_seq,
        d.d_year,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        (SELECT DISTINCT d_date, d_month_seq, d_year FROM date_dim WHERE d_year = 2000) d ON d.d_date = cast('2002-10-01' as date)
    WHERE 
        cd.cd_purchase_estimate > 500
),
CustomerStats AS (
    SELECT 
        ca.ca_city, 
        ca.ca_state,
        COUNT(*) AS total_customers,
        AVG(cd.cd_purchase_estimate) AS avg_purchase_estimate,
        COUNT(CASE WHEN cd.cd_gender = 'M' THEN 1 END) AS male_customers,
        COUNT(CASE WHEN cd.cd_gender = 'F' THEN 1 END) AS female_customers,
        COUNT(DISTINCT cd.cd_marital_status) AS marital_status_count
    FROM 
        FilteredCustomers fc
    GROUP BY 
        ca.ca_city, 
        ca.ca_state
)
SELECT 
    cs.ca_city,
    cs.ca_state,
    cs.total_customers,
    cs.avg_purchase_estimate,
    cs.male_customers,
    cs.female_customers,
    cs.marital_status_count,
    CONCAT(cs.ca_city, ', ', cs.ca_state) AS full_address,
    CONCAT(CAST(cs.total_customers AS VARCHAR), ' customers in ', CAST(cs.ca_city AS VARCHAR), ', ', CAST(cs.ca_state AS VARCHAR)) AS summary
FROM 
    CustomerStats cs
ORDER BY 
    cs.total_customers DESC
LIMIT 10;