
WITH customer_sales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_paid) AS total_sales,
        COUNT(ws.ws_order_number) AS order_count,
        RANK() OVER (ORDER BY SUM(ws.ws_net_paid) DESC) AS sales_rank
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
top_customers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cs.total_sales,
        cs.order_count
    FROM 
        customer c
    JOIN 
        customer_sales cs ON c.c_customer_sk = cs.c_customer_sk
    WHERE 
        cs.sales_rank <= 10
),
sales_summary AS (
    SELECT 
        cs.c_customer_sk,
        cs.c_first_name,
        cs.c_last_name,
        COALESCE(SUM(ss.ss_net_paid), 0) AS store_net_paid,
        COALESCE(SUM(cr.cr_return_amt), 0) AS store_returns,
        COALESCE(SUM(ws.ws_net_paid), 0) AS web_net_paid,
        COALESCE(SUM(wr.wr_return_amt), 0) AS web_returns
    FROM 
        top_customers cs
    LEFT JOIN 
        store_sales ss ON cs.c_customer_sk = ss.ss_customer_sk
    LEFT JOIN 
        catalog_returns cr ON cs.c_customer_sk = cr.cr_returning_customer_sk
    LEFT JOIN 
        web_sales ws ON cs.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        web_returns wr ON cs.c_customer_sk = wr.wr_returning_customer_sk
    GROUP BY 
        cs.c_customer_sk, cs.c_first_name, cs.c_last_name
)
SELECT 
    s.c_customer_sk,
    s.c_first_name,
    s.c_last_name,
    s.store_net_paid,
    s.store_returns,
    s.web_net_paid,
    s.web_returns,
    CASE 
        WHEN s.store_net_paid = 0 AND s.web_net_paid = 0 
        THEN 'No Sales' 
        ELSE 'Sales Made' 
    END AS sales_status,
    ROUND((COALESCE(s.store_net_paid, 0) + COALESCE(s.web_net_paid, 0) - COALESCE(s.store_returns, 0) - COALESCE(s.web_returns, 0)), 2) AS net_profit
FROM 
    sales_summary s
ORDER BY 
    s.store_net_paid DESC, 
    s.web_net_paid DESC;
