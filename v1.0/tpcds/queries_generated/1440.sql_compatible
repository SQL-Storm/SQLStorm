
WITH RankedSales AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_profit) AS total_net_profit,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY SUM(ws.ws_net_profit) DESC) AS rn
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        i.i_current_price > 0
        AND ws.ws_sold_date_sk >= (SELECT MAX(d.d_date_sk) FROM date_dim d WHERE d.d_year = 2022)
    GROUP BY 
        ws.ws_item_sk
),
BestSellingItems AS (
    SELECT 
        r.ws_item_sk,
        r.total_quantity,
        r.total_net_profit, 
        i.i_item_desc,
        i.i_category,
        COALESCE(NULLIF(i.i_brand, ''), 'Unknown Brand') AS brand
    FROM 
        RankedSales r
    JOIN 
        item i ON r.ws_item_sk = i.i_item_sk
    WHERE 
        r.rn = 1
),
CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        COUNT(DISTINCT c.c_customer_sk) AS customer_count
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        c.c_birth_year < 1980
    GROUP BY 
        cd.cd_demo_sk, cd.cd_gender, cd.cd_marital_status
)
SELECT 
    bsi.brand,
    bsi.i_item_desc,
    bsi.total_quantity,
    bsi.total_net_profit,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.customer_count,
    CASE 
        WHEN cd.cd_marital_status = 'M' THEN 'Married'
        WHEN cd.cd_marital_status = 'S' THEN 'Single'
        ELSE 'Other'
    END AS marital_status_group
FROM 
    BestSellingItems bsi
LEFT JOIN 
    CustomerDemographics cd ON bsi.ws_item_sk IN (
        SELECT ws_item_sk FROM web_sales
        WHERE ws_net_profit > 0
    )
ORDER BY 
    bsi.total_net_profit DESC
LIMIT 10;
