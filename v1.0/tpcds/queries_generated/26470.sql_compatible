
SELECT 
    CONCAT(c.c_first_name, ' ', c.c_last_name) AS customer_full_name,
    CONCAT(ca.ca_street_number, ' ', ca.ca_street_name, ' ', ca.ca_street_type) AS full_address,
    c.c_email_address,
    cd.cd_gender,
    cd.cd_marital_status,
    COUNT(ws.ws_order_number) AS total_orders,
    SUM(ws.ws_ext_sales_price) AS total_spending,
    AVG(ws.ws_net_profit) AS average_profit_per_order,
    STRING_AGG(DISTINCT p.p_promo_name, ', ') AS promotions_used,
    d.d_date AS last_order_date,
    DATE_FORMAT(d.d_date, '%H:%i:%s') AS order_time_of_day
FROM 
    customer AS c
JOIN 
    customer_address AS ca ON ca.ca_address_sk = c.c_current_addr_sk
JOIN 
    customer_demographics AS cd ON cd.cd_demo_sk = c.c_current_cdemo_sk
LEFT JOIN 
    web_sales AS ws ON ws.ws_bill_customer_sk = c.c_customer_sk
LEFT JOIN 
    promotion AS p ON ws.ws_promo_sk = p.p_promo_sk
LEFT JOIN 
    date_dim AS d ON d.d_date_sk = ws.ws_sold_date_sk
WHERE 
    cd.cd_marital_status = 'M' 
    AND cd.cd_gender = 'F' 
    AND ca.ca_state = 'CA'
GROUP BY 
    c.c_first_name, c.c_last_name, ca.ca_street_number, ca.ca_street_name, 
    ca.ca_street_type, c.c_email_address, cd.cd_gender, cd.cd_marital_status, d.d_date
HAVING 
    SUM(ws.ws_ext_sales_price) > 1000
ORDER BY 
    total_spending DESC;
