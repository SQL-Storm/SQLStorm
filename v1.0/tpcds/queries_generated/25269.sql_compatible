
WITH customer_info AS (
    SELECT
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country
    FROM
        customer c
    JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
item_sales AS (
    SELECT
        i.i_item_sk,
        i.i_item_id,
        i.i_product_name,
        SUM(ws.ws_quantity) AS total_sold,
        SUM(ws.ws_net_paid) AS total_revenue
    FROM
        web_sales ws
    JOIN
        item i ON ws.ws_item_sk = i.i_item_sk
    GROUP BY
        i.i_item_sk, i.i_item_id, i.i_product_name
),
sales_summary AS (
    SELECT
        ci.full_name,
        ci.ca_city,
        ci.ca_state,
        ci.ca_country,
        i.item_id,
        i.product_name,
        COALESCE(s.total_sold, 0) AS total_sold,
        COALESCE(s.total_revenue, 0) AS total_revenue
    FROM
        customer_info ci
    CROSS JOIN
        (SELECT DISTINCT i.i_item_id AS item_id, i.i_product_name AS product_name FROM item) i
    LEFT JOIN
        item_sales s ON i.item_id = s.i_item_id
)
SELECT
    ca.ca_city,
    ca.ca_state,
    COUNT(DISTINCT ss.full_name) AS num_customers,
    COUNT(ss.item_id) AS num_items_sold,
    SUM(ss.total_revenue) AS total_revenue,
    AVG(ss.total_revenue) AS avg_revenue_per_item
FROM
    sales_summary ss
JOIN
    customer_address ca ON ss.ca_city = ca.ca_city AND ss.ca_state = ca.ca_state
GROUP BY
    ca.ca_city, ca.ca_state
ORDER BY
    total_revenue DESC
LIMIT 100;
