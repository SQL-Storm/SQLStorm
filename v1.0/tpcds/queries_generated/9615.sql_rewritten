WITH customer_sales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_paid) AS total_web_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        AVG(ws.ws_sales_price) AS avg_order_value
    FROM 
        customer AS c
    JOIN 
        web_sales AS ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        c.c_birth_year BETWEEN 1970 AND 1980
        AND ws.ws_sold_date_sk BETWEEN 2450000 AND 2450500 
    GROUP BY 
        c.c_customer_id
),
top_customers AS (
    SELECT 
        c.c_customer_id,
        cs.total_web_sales,
        cs.total_orders,
        cs.avg_order_value,
        RANK() OVER (ORDER BY cs.total_web_sales DESC) AS revenue_rank
    FROM 
        customer_sales AS cs
    JOIN 
        customer AS c ON cs.c_customer_id = c.c_customer_id
)
SELECT 
    t.c_customer_id,
    t.total_web_sales,
    t.total_orders,
    t.avg_order_value,
    d.d_year AS sales_year,
    COUNT(DISTINCT ws.ws_item_sk) AS unique_items_purchased
FROM 
    top_customers AS t
JOIN 
    web_sales AS ws ON t.c_customer_id = ws.ws_bill_customer_sk
JOIN 
    date_dim AS d ON ws.ws_sold_date_sk = d.d_date_sk
WHERE 
    t.revenue_rank <= 10
GROUP BY 
    t.c_customer_id, t.total_web_sales, t.total_orders, t.avg_order_value, d.d_year
ORDER BY 
    t.total_web_sales DESC;