
WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name,
        COUNT(ws.ws_order_number) AS total_orders,
        SUM(ws.ws_net_paid) AS total_spent,
        AVG(ws.ws_net_paid) AS avg_spent
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
TopCustomers AS (
    SELECT 
        cs.c_customer_sk, 
        cs.c_first_name, 
        cs.c_last_name,
        cs.total_orders,
        cs.total_spent
    FROM 
        CustomerSales cs
    WHERE 
        cs.total_orders > 1 AND cs.total_spent IS NOT NULL
),
HighSpenders AS (
    SELECT 
        c.c_customer_sk,
        cs.total_spent,
        DENSE_RANK() OVER (ORDER BY cs.total_spent DESC) AS spend_rank
    FROM 
        TopCustomers cs
)
SELECT 
    c.c_first_name, 
    c.c_last_name, 
    cs.total_orders, 
    cs.total_spent 
FROM 
    HighSpenders hs
JOIN 
    TopCustomers cs ON hs.customer_sk = cs.c_customer_sk
WHERE 
    hs.spend_rank <= 10
ORDER BY 
    cs.total_spent DESC;
