
WITH customer_purchases AS (
    SELECT 
        c.c_customer_id, 
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        SUBSTRING(c.c_email_address FROM POSITION('@' IN c.c_email_address) + 1) AS email_domain,
        COUNT(ws.ws_order_number) AS total_purchases,
        SUM(ws.ws_ext_sales_price) AS total_spent
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name, c.c_email_address
),
demographic_summary AS (
    SELECT 
        cd.cd_gender,
        COUNT(*) AS count,
        AVG(cp.total_spent) AS avg_spent,
        MAX(cp.total_purchases) AS max_purchases
    FROM 
        customer_purchases cp
    JOIN 
        customer_demographics cd ON cp.c_customer_id = cd.cd_demo_sk
    GROUP BY 
        cd.cd_gender
),
formatted_summary AS (
    SELECT 
        cd_gender,
        count,
        ROUND(avg_spent, 2) AS formatted_avg_spent,
        max_purchases
    FROM 
        demographic_summary
    ORDER BY 
        cd_gender
)
SELECT 
    cd_gender,
    count,
    formatted_avg_spent,
    max_purchases,
    CASE 
        WHEN formatted_avg_spent > 1000 THEN 'High Value'
        WHEN formatted_avg_spent BETWEEN 500 AND 1000 THEN 'Medium Value'
        ELSE 'Low Value'
    END AS customer_value_segment
FROM 
    formatted_summary;
