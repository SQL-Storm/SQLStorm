
WITH CustomerSummary AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        ca.ca_city,
        ca.ca_state,
        COALESCE(NULLIF(cd.cd_credit_rating, 'unknown'), 'Not Specified') AS credit_status,
        ROW_NUMBER() OVER (PARTITION BY ca.ca_state ORDER BY cd.cd_purchase_estimate DESC) AS rank_by_spending
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
TopCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        c.ca_city,
        c.ca_state,
        c.credit_status
    FROM 
        CustomerSummary c
    WHERE 
        c.rank_by_spending <= 10
),
SalesData AS (
    SELECT 
        ws.ws_bill_customer_sk,
        SUM(ws.ws_net_paid) AS total_spent,
        COUNT(ws.ws_order_number) AS total_orders,
        AVG(ws.ws_net_paid) AS avg_order_value
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_bill_customer_sk
)
SELECT 
    tc.c_first_name,
    tc.c_last_name,
    tc.ca_city,
    tc.ca_state,
    COALESCE(sd.total_spent, 0) AS total_spent,
    COALESCE(sd.total_orders, 0) AS total_orders,
    COALESCE(sd.avg_order_value, 0) AS avg_order_value
FROM 
    TopCustomers tc
LEFT JOIN 
    SalesData sd ON tc.c_customer_sk = sd.ws_bill_customer_sk
ORDER BY 
    total_spent DESC
LIMIT 50
UNION ALL
SELECT 
    'Total Revenue' AS c_first_name,
    NULL AS c_last_name,
    NULL AS ca_city,
    NULL AS ca_state,
    SUM(ws.ws_net_paid) AS total_spent,
    COUNT(ws.ws_order_number) AS total_orders,
    AVG(ws.ws_net_paid) AS avg_order_value
FROM 
    web_sales ws
WHERE 
    ws.ws_bill_customer_sk IS NOT NULL;
