
WITH RankedSales AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_profit) AS total_profit,
        RANK() OVER (PARTITION BY ca.ca_state ORDER BY SUM(ws.ws_net_profit) DESC) AS profit_rank
    FROM
        web_sales ws
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name, ca.ca_state
),
TopRankedSales AS (
    SELECT 
        ca.ca_state,
        AVG(total_profit) AS avg_profit,
        COUNT(CASE WHEN profit_rank <= 5 THEN 1 END) AS top_customers_count
    FROM 
        RankedSales rs
    JOIN 
        customer_address ca ON rs.c_customer_id = ca.ca_address_sk
    GROUP BY 
        ca.ca_state
)
SELECT 
    ca_state,
    avg_profit,
    top_customers_count,
    ROUND((avg_profit / NULLIF(MAX(avg_profit) OVER (), 0)) * 100, 2) AS normalized_avg_profit
FROM 
    TopRankedSales
ORDER BY 
    avg_profit DESC;
