
WITH RECURSIVE sales_hierarchy AS (
    SELECT 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        SUM(ws.ws_net_profit) AS total_profit,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY SUM(ws.ws_net_profit) DESC) AS rn
    FROM 
        customer AS c
    LEFT JOIN 
        web_sales AS ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    WHERE 
        ws.ws_sold_date_sk IS NOT NULL
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
inventory_analysis AS (
    SELECT 
        i.i_item_sk, 
        SUM(inv.inv_quantity_on_hand) AS total_quantity
    FROM 
        inventory AS inv
    JOIN 
        item AS i ON inv.inv_item_sk = i.i_item_sk
    WHERE 
        inv.inv_quantity_on_hand < 10
    GROUP BY 
        i.i_item_sk
),
promotions_analysis AS (
    SELECT 
        p.p_promo_id,
        COUNT(DISTINCT ws.ws_order_number) AS promo_count,
        SUM(ws.ws_net_profit) AS total_promo_profit
    FROM 
        promotion AS p
    LEFT JOIN 
        web_sales AS ws ON p.p_promo_sk = ws.ws_promo_sk
    GROUP BY 
        p.p_promo_id
),
daily_sales AS (
    SELECT 
        dd.d_date,
        COUNT(ws.ws_order_number) AS total_orders,
        SUM(ws.ws_net_paid) AS total_sales,
        SUM(ws.ws_net_profit) AS total_profit
    FROM 
        date_dim AS dd
    LEFT JOIN 
        web_sales AS ws ON dd.d_date_sk = ws.ws_sold_date_sk
    GROUP BY 
        dd.d_date
),
null_check AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        COALESCE(cd.cd_gender, 'Unknown') AS gender,
        COALESCE(ib.ib_lower_bound, 0) AS income_lower_bound,
        COALESCE(ib.ib_upper_bound, 100000) AS income_upper_bound
    FROM 
        customer AS c
    LEFT JOIN 
        customer_demographics AS cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        household_demographics AS hd ON c.c_current_hdemo_sk = hd.hd_demo_sk
    LEFT JOIN 
        income_band AS ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
)
SELECT 
    s.c_first_name || ' ' || s.c_last_name AS customer_name,
    s.total_profit,
    ia.total_quantity,
    pa.promo_count,
    pa.total_promo_profit,
    d.total_sales,
    d.total_orders,
    d.total_profit,
    nc.gender,
    nc.income_lower_bound,
    nc.income_upper_bound
FROM 
    sales_hierarchy AS s
JOIN 
    inventory_analysis AS ia ON ia.i_item_sk IN (SELECT ws.ws_item_sk FROM web_sales AS ws WHERE ws.ws_ship_customer_sk = s.c_customer_sk)
JOIN 
    promotions_analysis AS pa ON pa.promo_count > 0
JOIN 
    daily_sales AS d ON d.total_profit > 1000
JOIN 
    null_check AS nc ON nc.c_customer_sk = s.c_customer_sk
WHERE 
    s.rn = 1
ORDER BY 
    s.total_profit DESC;
