
WITH RankedSales AS (
    SELECT 
        ws.ship_date_sk,
        i.item_id,
        SUM(ws.net_profit) AS total_net_profit,
        RANK() OVER (PARTITION BY ws.ship_date_sk ORDER BY SUM(ws.net_profit) DESC) AS profit_rank
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.item_sk = i.item_sk
    WHERE 
        ws.ship_date_sk BETWEEN '20230101' AND '20231231'
    GROUP BY 
        ws.ship_date_sk, i.item_id
),
TopPerformingItems AS (
    SELECT 
        ship_date_sk,
        item_id,
        total_net_profit
    FROM 
        RankedSales
    WHERE 
        profit_rank <= 5
),
CustomerInfo AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band_sk,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        ws.ship_date_sk IN (SELECT ship_date_sk FROM TopPerformingItems)
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status, cd.cd_income_band_sk
)
SELECT 
    ci.c_customer_id,
    ci.c_first_name,
    ci.c_last_name,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.cd_income_band_sk,
    ci.total_orders,
    tpi.item_id,
    tpi.total_net_profit
FROM 
    CustomerInfo ci
JOIN 
    TopPerformingItems tpi ON ci.total_orders >= 1
ORDER BY 
    tpi.ship_date_sk, tpi.total_net_profit DESC, ci.total_orders DESC;
