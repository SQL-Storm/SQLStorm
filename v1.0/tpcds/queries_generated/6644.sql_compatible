
WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(ws.ws_order_number) AS total_orders
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
TopCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.total_profit,
        c.total_orders,
        ROW_NUMBER() OVER (ORDER BY c.total_profit DESC) AS rank
    FROM 
        CustomerSales c
)
SELECT 
    tc.rank,
    tc.c_first_name,
    tc.c_last_name,
    tc.total_profit,
    tc.total_orders,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.cd_education_status
FROM 
    TopCustomers tc
JOIN 
    customer_demographics cd ON cd.cd_demo_sk = tc.c_customer_sk
WHERE 
    tc.rank <= 10
ORDER BY 
    tc.total_profit DESC;
