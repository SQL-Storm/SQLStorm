
WITH AddressParts AS (
    SELECT 
        ca_address_sk,
        TRIM(ca_street_number) || ' ' || TRIM(ca_street_name) || ' ' || TRIM(ca_street_type) ||
        CASE WHEN ca_suite_number IS NOT NULL AND ca_suite_number <> '' THEN ' Suite ' || TRIM(ca_suite_number) ELSE '' END AS full_address,
        TRIM(ca_city) AS city,
        TRIM(ca_state) AS state,
        TRIM(ca_zip) AS zip
    FROM 
        customer_address
),
Demographics AS (
    SELECT 
        cd_demo_sk,
        cd_gender,
        CASE 
            WHEN cd_marital_status = 'M' THEN 'Married' 
            WHEN cd_marital_status = 'S' THEN 'Single' 
            ELSE 'Other' 
        END AS marital_status,
        TRIM(cd_education_status) AS education,
        cd_purchase_estimate,
        TRIM(cd_credit_rating) AS credit_rating
    FROM 
        customer_demographics
),
CustomerDetails AS (
    SELECT 
        c.c_customer_sk,
        TRIM(c.c_first_name) || ' ' || TRIM(c.c_last_name) AS full_name,
        a.full_address,
        a.city,
        a.state,
        a.zip,
        d.cd_gender AS gender,
        d.marital_status,
        d.education
    FROM 
        customer c
    JOIN 
        AddressParts a ON c.c_current_addr_sk = a.ca_address_sk
    JOIN 
        Demographics d ON c.c_current_cdemo_sk = d.cd_demo_sk
),
SalesData AS (
    SELECT 
        ws.bill_customer_sk,
        SUM(ws.ws_net_paid_inc_tax) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
    GROUP BY 
        ws.bill_customer_sk
)
SELECT 
    c.full_name,
    c.full_address,
    c.city,
    c.state,
    c.zip,
    c.gender,
    c.marital_status,
    c.education,
    COALESCE(s.total_sales, 0) AS total_sales,
    COALESCE(s.total_orders, 0) AS total_orders
FROM 
    CustomerDetails c
LEFT JOIN 
    SalesData s ON c.c_customer_sk = s.bill_customer_sk
ORDER BY 
    total_sales DESC
LIMIT 100;
