
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS num_orders,
        AVG(ws.ws_sales_price) AS avg_order_value
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023
    GROUP BY 
        c.c_customer_id
),
SalesByState AS (
    SELECT 
        ca.ca_state,
        SUM(cs.total_sales) AS state_sales,
        AVG(cs.avg_order_value) AS avg_order_value
    FROM 
        CustomerSales cs
    JOIN 
        customer_address ca ON ca.ca_address_sk = (
            SELECT ca_current_addr_sk 
            FROM customer c 
            WHERE c.c_customer_id = cs.c_customer_id
        )
    GROUP BY 
        ca.ca_state
),
TopStates AS (
    SELECT 
        ca.ca_state,
        RANK() OVER (ORDER BY state_sales DESC) AS state_rank
    FROM 
        SalesByState ca
)
SELECT 
    ts.ca_state,
    ss.state_sales,
    ss.avg_order_value
FROM 
    TopStates ts
JOIN 
    SalesByState ss ON ts.ca_state = ss.ca_state
WHERE 
    ts.state_rank <= 5
ORDER BY 
    ts.state_rank;
