
WITH CustomerAddressDetails AS (
    SELECT 
        ca.ca_address_sk,
        CONCAT(ca.ca_street_number, ' ', ca.ca_street_name, ' ', ca.ca_street_type) AS full_address,
        ca.ca_city,
        ca.ca_state,
        ca.ca_zip
    FROM 
        customer_address ca
),
CustomerGenderAnalysis AS (
    SELECT 
        cd.cd_gender,
        COUNT(DISTINCT c.c_customer_id) AS total_customers,
        AVG(cd.cd_purchase_estimate) AS avg_purchase_estimate
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        cd.cd_gender
),
SalesData AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity_sold,
        SUM(ws.ws_net_paid_inc_tax) AS total_sales_value
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2023
    GROUP BY 
        ws.ws_item_sk
),
CombinedAnalysis AS (
    SELECT 
        c.c_first_name,
        c.c_last_name,
        ca.full_address,
        cga.cd_gender,
        COALESCE(s.total_quantity_sold, 0) AS total_quantity_sold,
        COALESCE(s.total_sales_value, 0) AS total_sales_value,
        cga.avg_purchase_estimate
    FROM 
        customer c
    JOIN 
        CustomerAddressDetails ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        CustomerGenderAnalysis cga ON c.c_current_cdemo_sk = (SELECT cd.cd_demo_sk FROM customer_demographics cd WHERE cd.cd_gender = cga.cd_gender)
    LEFT JOIN 
        SalesData s ON c.c_customer_sk = s.ws_item_sk 
    WHERE 
        c.c_preferred_cust_flag = 'Y'
)
SELECT 
    cd_gender,
    COUNT(*) AS total_customers,
    SUM(total_quantity_sold) AS total_sales,
    AVG(total_sales_value) AS avg_sales_value
FROM 
    CombinedAnalysis
GROUP BY 
    cd_gender
ORDER BY 
    total_customers DESC;
