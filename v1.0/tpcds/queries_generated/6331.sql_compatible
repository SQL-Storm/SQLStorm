
WITH SalesSummary AS (
    SELECT 
        cs_item_sk,
        SUM(cs_quantity) AS total_quantity,
        SUM(cs_ext_sales_price) AS total_sales,
        AVG(cs_sales_price) AS avg_sales_price,
        SUM(cs_ext_discount_amt) AS total_discount,
        cs_sold_date_sk
    FROM 
        catalog_sales 
    WHERE 
        cs_sold_date_sk BETWEEN (SELECT d_date_sk FROM date_dim WHERE d_date = '2023-01-01') AND (SELECT d_date_sk FROM date_dim WHERE d_date = '2023-12-31')
    GROUP BY 
        cs_item_sk, cs_sold_date_sk
),
TopSellingItems AS (
    SELECT 
        cs_item_sk,
        total_quantity,
        total_sales,
        avg_sales_price,
        total_discount
    FROM 
        SalesSummary 
    ORDER BY 
        total_sales DESC
    LIMIT 10
)
SELECT 
    i.i_item_id,
    i.i_item_desc,
    tsi.total_quantity,
    tsi.total_sales,
    tsi.avg_sales_price,
    tsi.total_discount,
    d.d_date AS sales_date
FROM 
    TopSellingItems tsi
JOIN 
    item i ON tsi.cs_item_sk = i.i_item_sk
JOIN 
    date_dim d ON tsi.cs_sold_date_sk = d.d_date_sk
WHERE 
    d.d_year = 2023
ORDER BY 
    tsi.total_sales DESC;
