WITH TotalSales AS (
    SELECT 
        ws_item_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws_order_number) AS order_count
    FROM web_sales
    WHERE ws_sold_date_sk = (SELECT d_date_sk FROM date_dim WHERE d_date = cast('2002-10-01' as date))
    GROUP BY ws_item_sk
),
TopSellingItems AS (
    SELECT 
        ts.ws_item_sk,
        i.i_product_name,
        ts.total_sales,
        ts.order_count,
        RANK() OVER (ORDER BY ts.total_sales DESC) AS sales_rank
    FROM TotalSales ts
    JOIN item i ON ts.ws_item_sk = i.i_item_sk
    WHERE ts.total_sales > 1000
),
CustomerReturns AS (
    SELECT 
        sr_customer_sk,
        COUNT(DISTINCT sr_ticket_number) AS return_count,
        SUM(sr_return_amt) AS total_return_amt
    FROM store_returns
    GROUP BY sr_customer_sk
)
SELECT 
    c.c_customer_id,
    c.c_first_name,
    c.c_last_name,
    ti.i_product_name,
    COUNT(DISTINCT c.cc_closed_date_sk) AS return_days,
    SUM(COALESCE(cr.return_count, 0)) AS total_returns,
    MAX(COALESCE(cr.total_return_amt, 0)) AS max_return_amt
FROM customer c
LEFT JOIN TopSellingItems ti ON c.c_customer_sk = ti.ws_item_sk
LEFT JOIN CustomerReturns cr ON c.c_customer_sk = cr.sr_customer_sk
WHERE c.c_current_cdemo_sk IS NOT NULL
AND (c.c_birth_year BETWEEN 1970 AND 1990 OR c.c_first_name LIKE 'A%')
GROUP BY c.c_customer_id, c.c_first_name, c.c_last_name, ti.i_product_name
HAVING COUNT(DISTINCT c.cc_closed_date_sk) > 0
ORDER BY SUM(COALESCE(cr.total_return_amt, 0)) DESC
LIMIT 10;