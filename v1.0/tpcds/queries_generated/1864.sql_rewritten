WITH RankedSales AS (
    SELECT 
        ws.ship_mode_sk,
        ws.ws_item_sk,
        SUM(ws.ws_sales_price) AS total_sales,
        DENSE_RANK() OVER (PARTITION BY ws.ship_mode_sk ORDER BY SUM(ws.ws_sales_price) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    JOIN 
        store s ON ws.ws_store_sk = s.s_store_sk
    WHERE 
        i.i_rec_start_date <= cast('2002-10-01' as date) AND (i.i_rec_end_date IS NULL OR i.i_rec_end_date > cast('2002-10-01' as date))
    GROUP BY 
        ws.ship_mode_sk, ws.ws_item_sk
),
TopSales AS (
    SELECT 
        ship_mode.sm_ship_mode_id,
        ship_mode.sm_type,
        rs.total_sales
    FROM 
        RankedSales rs
    JOIN 
        ship_mode ON rs.ship_mode_sk = ship_mode.sm_ship_mode_sk
    WHERE 
        rs.sales_rank <= 5
),
CustomerInfo AS (
    SELECT
        c.c_customer_id,
        d.d_date,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        SUM(ws.ws_sales_price) AS total_spent
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY 
        c.c_customer_id, d.d_date
)
SELECT 
    ci.c_customer_id,
    ci.total_orders,
    ci.total_spent,
    ts.sm_ship_mode_id,
    ts.sm_type,
    ts.total_sales
FROM 
    CustomerInfo ci
JOIN 
    TopSales ts ON ci.total_spent >= (SELECT AVG(total_spent) FROM CustomerInfo)
WHERE 
    ci.total_orders > 0
ORDER BY 
    ci.total_spent DESC
LIMIT 10;