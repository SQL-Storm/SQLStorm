
WITH RECURSIVE SalesCTE AS (
    SELECT 
        ws_bill_customer_sk,
        ws_item_sk,
        ws_quantity,
        ws_net_paid,
        ROW_NUMBER() OVER (PARTITION BY ws_bill_customer_sk ORDER BY ws_sold_date_sk DESC) AS rn
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk >= (SELECT MAX(ws_sold_date_sk) FROM web_sales) - 30
),
InventoryCTE AS (
    SELECT 
        inv_item_sk,
        SUM(inv_quantity_on_hand) AS total_on_hand
    FROM 
        inventory
    GROUP BY 
        inv_item_sk
),
HighValueCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_income_band_sk,
        SUM(s.ws_net_paid) AS total_spent
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        web_sales s ON c.c_customer_sk = s.ws_bill_customer_sk
    WHERE 
        cd.cd_purchase_estimate > 1000
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_income_band_sk
    HAVING 
        SUM(s.ws_net_paid) > 5000
),
JoinedResults AS (
    SELECT 
        hvc.c_customer_sk,
        hvc.c_first_name,
        hvc.c_last_name,
        hvc.cd_gender,
        hvc.cd_income_band_sk,
        iv.total_on_hand,
        COALESCE(sq.ws_quantity, 0) AS quantity_sold,
        COALESCE(sq.ws_net_paid, 0) AS total_net_paid
    FROM 
        HighValueCustomers hvc
    LEFT JOIN 
        InventoryCTE iv ON iv.inv_item_sk IN (SELECT DISTINCT ws_item_sk FROM web_sales WHERE ws_bill_customer_sk = hvc.c_customer_sk)
    LEFT JOIN 
        SalesCTE sq ON sq.ws_bill_customer_sk = hvc.c_customer_sk
)
SELECT 
    j.c_customer_sk,
    CONCAT(j.c_first_name, ' ', j.c_last_name) AS full_name,
    j.cd_gender,
    j.cd_income_band_sk,
    j.total_on_hand,
    SUM(j.quantity_sold) AS total_quantity_sold,
    SUM(j.total_net_paid) AS total_net_paid,
    CASE
        WHEN SUM(j.total_net_paid) IS NULL OR SUM(j.total_net_paid) = 0 THEN 'No Sales'
        ELSE 'Has Sales'
    END AS sales_status
FROM 
    JoinedResults j
GROUP BY 
    j.c_customer_sk, j.c_first_name, j.c_last_name, j.cd_gender, j.cd_income_band_sk, j.total_on_hand
ORDER BY 
    total_net_paid DESC
LIMIT 10;
