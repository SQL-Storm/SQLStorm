
WITH customer_details AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band AS income_band,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_gender ORDER BY cd.cd_purchase_estimate DESC) AS rn
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
high_value_customers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        COALESCE(SUM(ws.ws_net_profit), 0) AS total_profit
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
    HAVING 
        total_profit > (
            SELECT 
                AVG(ws_profit) 
            FROM (
                SELECT 
                    SUM(ws.ws_net_profit) AS ws_profit
                FROM 
                    web_sales ws
                GROUP BY 
                    ws.ws_bill_customer_sk
            ) AS avg_profit
        )
),
income_distribution AS (
    SELECT 
        ib.ib_income_band_sk,
        COUNT(DISTINCT c.c_customer_sk) AS count_customers
    FROM 
        income_band ib
    LEFT JOIN 
        customer_demographics cd ON ib.ib_income_band_sk = cd.cd_demo_sk
    LEFT JOIN 
        customer c ON cd.cd_demo_sk = c.c_current_cdemo_sk
    GROUP BY 
        ib.ib_income_band_sk
)
SELECT 
    cd.c_first_name,
    cd.c_last_name,
    cd.cd_gender,
    cd.cd_marital_status,
    COALESCE(ih.count_customers, 0) AS customers_in_income_band,
    CASE 
        WHEN cd.cd_gender = 'M' THEN 'Mr. ' || cd.c_last_name 
        ELSE 'Ms. ' || cd.c_last_name 
    END AS full_salutation,
    CASE 
        WHEN cd.cd_purchase_estimate IS NULL THEN 'Unknown Purchase Estimate'
        ELSE CAST(cd.cd_purchase_estimate AS TEXT)
    END AS purchase_estimate,
    COUNT(DISTINCT hvc.c_customer_sk) AS high_value_mention
FROM 
    customer_details cd
LEFT JOIN 
    high_value_customers hvc ON cd.c_customer_sk = hvc.c_customer_sk
LEFT JOIN 
    income_distribution ih ON cd.income_band = ih.ib_income_band_sk
WHERE 
    cd.rn <= 10 
    AND (cd.cd_credit_rating IS NOT NULL OR cd.cd_income_band IS NOT NULL)
GROUP BY 
    cd.c_first_name, cd.c_last_name, cd.cd_gender, cd.cd_marital_status, ih.count_customers, cd.cd_income_band
ORDER BY 
    high_value_mention DESC, cd.c_last_name ASC
LIMIT 50;
