
WITH RankedSales AS (
    SELECT 
        ws.web_site_sk,
        ws.ws_order_number,
        ws.ws_sales_price,
        ws.ws_net_profit,
        RANK() OVER (PARTITION BY ws.web_site_sk ORDER BY ws.ws_net_profit DESC) AS sales_rank
    FROM 
        web_sales ws
    WHERE 
        ws.ws_sold_date_sk = (
            SELECT 
                MAX(d.d_date_sk) 
            FROM 
                date_dim d 
            WHERE 
                d.d_year = 2023
        )
),
CustomerMetrics AS (
    SELECT 
        c.c_customer_sk,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        SUM(ws.ws_net_profit) AS total_net_profit,
        AVG(ws.ws_sales_price) AS avg_sales_price
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    GROUP BY 
        c.c_customer_sk
),
BestSellingItems AS (
    SELECT 
        i.i_item_sk,
        i.i_item_desc,
        SUM(ws.ws_quantity) AS total_quantity_sold
    FROM 
        item i
    JOIN 
        web_sales ws ON i.i_item_sk = ws.ws_item_sk
    GROUP BY 
        i.i_item_sk, i.i_item_desc
    HAVING 
        SUM(ws.ws_quantity) > 100
)
SELECT 
    ca.ca_city,
    COUNT(DISTINCT c.c_customer_sk) AS customer_count,
    COALESCE(SUM(cm.total_orders), 0) AS total_orders,
    COALESCE(SUM(cm.total_net_profit), 0) AS total_net_profit,
    ARRAY_AGG(DISTINCT bsi.i_item_desc ORDER BY bsi.total_quantity_sold DESC) AS best_selling_items,
    MAX(rs.sales_rank) AS max_sales_rank
FROM 
    customer_address ca
LEFT JOIN 
    customer c ON ca.ca_address_sk = c.c_current_addr_sk
LEFT JOIN 
    CustomerMetrics cm ON c.c_customer_sk = cm.c_customer_sk
LEFT JOIN 
    BestSellingItems bsi ON TRUE
LEFT JOIN 
    RankedSales rs ON c.c_customer_sk = rs.web_site_sk
WHERE 
    ca.ca_state = 'CA' 
    AND (cm.total_net_profit IS NULL OR cm.total_net_profit < 1000)
GROUP BY 
    ca.ca_city
ORDER BY 
    total_net_profit DESC 
LIMIT 10;
