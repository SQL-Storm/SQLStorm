
WITH AddressDetails AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip,
        ca_country
    FROM 
        customer_address
),
DemographicDetails AS (
    SELECT 
        cd_demo_sk,
        CONCAT(cd_gender, ' ', cd_marital_status, ' ', cd_education_status) AS demographic_info,
        cd_purchase_estimate,
        cd_credit_rating,
        cd_dep_count
    FROM 
        customer_demographics
),
ItemDetails AS (
    SELECT 
        i_item_sk,
        CONCAT(i_brand, ' ', i_product_name) AS item_description,
        i_current_price,
        i_size,
        i_color
    FROM 
        item
),
SalesDetails AS (
    SELECT 
        ws.web_site_sk,
        SUM(ws.ws_quantity) AS total_quantity_sold,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        SUM(ws.ws_ext_discount_amt) AS total_discount
    FROM 
        web_sales ws
    JOIN 
        web_site w ON ws.ws_web_site_sk = w.web_site_sk
    GROUP BY 
        ws.web_site_sk
),
ExtendedReport AS (
    SELECT 
        ad.full_address,
        ad.ca_city,
        ad.ca_state,
        ad.ca_zip,
        ad.ca_country,
        dd.demographic_info,
        dd.cd_purchase_estimate,
        id.item_description,
        id.i_current_price,
        sd.total_quantity_sold,
        sd.total_sales,
        sd.total_discount
    FROM 
        AddressDetails ad
    CROSS JOIN 
        DemographicDetails dd
    CROSS JOIN 
        ItemDetails id
    CROSS JOIN 
        SalesDetails sd
)
SELECT 
    full_address,
    ca_city,
    ca_state,
    ca_zip,
    ca_country,
    demographic_info,
    cd_purchase_estimate,
    item_description,
    i_current_price,
    total_quantity_sold,
    total_sales,
    total_discount
FROM 
    ExtendedReport
WHERE 
    total_sales > 1000
ORDER BY 
    total_sales DESC;
