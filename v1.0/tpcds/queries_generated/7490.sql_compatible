
WITH RankedSales AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ext_sales_price) AS total_sales,
        COUNT(ws.order_number) AS total_orders,
        DENSE_RANK() OVER (ORDER BY SUM(ws.ext_sales_price) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        web_site w ON ws.web_site_sk = w.web_site_sk
    JOIN 
        customer c ON ws.bill_customer_sk = c.c_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        cd.cd_gender = 'F' 
        AND cd.cd_marital_status = 'M' 
        AND ws.sold_date_sk BETWEEN 2450000 AND 2451000  
    GROUP BY 
        ws.web_site_id
), TopWebSites AS (
    SELECT 
        web_site_id,
        total_sales,
        total_orders
    FROM 
        RankedSales
    WHERE 
        sales_rank <= 5
)
SELECT 
    w.web_name,
    w.web_city,
    w.web_state,
    tw.total_sales,
    tw.total_orders,
    ROUND(tw.total_sales / NULLIF(tw.total_orders, 0), 2) AS avg_order_value
FROM 
    TopWebSites tw
JOIN 
    web_site w ON tw.web_site_id = w.web_site_id;
