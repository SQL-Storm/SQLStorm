
SELECT 
    ca.ca_city, 
    COUNT(DISTINCT c.c_customer_id) AS customer_count,
    COUNT(DISTINCT ss.ss_ticket_number) AS sales_count,
    AVG(ss.ss_sales_price) AS avg_sales_price,
    STRING_AGG(DISTINCT cd.cd_gender) AS unique_genders,
    STRING_AGG(DISTINCT s.s_state) AS delivery_states,
    STRING_AGG(DISTINCT p.p_promo_name ORDER BY p.p_promo_name) AS promo_names
FROM 
    customer_address ca
JOIN 
    customer c ON ca.ca_address_sk = c.c_current_addr_sk
JOIN 
    store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
JOIN 
    item i ON ss.ss_item_sk = i.i_item_sk
JOIN 
    promotion p ON ss.ss_promo_sk = p.p_promo_sk
JOIN 
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
LEFT JOIN 
    store s ON ss.ss_store_sk = s.s_store_sk
GROUP BY 
    ca.ca_city
HAVING 
    COUNT(DISTINCT ss.ss_ticket_number) > 10
ORDER BY 
    customer_count DESC;
