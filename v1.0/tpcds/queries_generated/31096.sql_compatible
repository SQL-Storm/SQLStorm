
WITH RECURSIVE top_customers AS (
    SELECT c.c_customer_sk,
           c.c_first_name,
           c.c_last_name,
           SUM(ws.ws_net_profit) AS total_profit
    FROM customer c
    JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY c.c_customer_sk, c.c_first_name, c.c_last_name
    ORDER BY total_profit DESC
    LIMIT 10
), 
sales_details AS (
    SELECT ws.ws_order_number,
           ws.ws_quantity,
           ws.ws_net_profit,
           i.i_item_desc,
           s.s_store_name,
           d.d_date
    FROM web_sales ws
    JOIN item i ON ws.ws_item_sk = i.i_item_sk
    JOIN store s ON ws.ws_ship_addr_sk = s.s_store_sk
    JOIN date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE ws.ws_net_profit > 0
),
return_details AS (
    SELECT wr.wr_order_number,
           SUM(wr.wr_return_quantity) AS total_returns,
           SUM(wr.wr_return_amt_inc_tax) AS total_returned_amount
    FROM web_returns wr
    GROUP BY wr.wr_order_number
),
profit_analysis AS (
    SELECT sd.ws_order_number,
           SUM(sd.ws_net_profit) AS total_net_profit,
           COALESCE(rd.total_returns, 0) AS total_returns,
           COALESCE(rd.total_returned_amount, 0) AS total_returned_amount
    FROM sales_details sd
    LEFT JOIN return_details rd ON sd.ws_order_number = rd.wr_order_number
    GROUP BY sd.ws_order_number
),
final_report AS (
    SELECT tc.c_first_name,
           tc.c_last_name,
           pa.total_net_profit,
           pa.total_returns,
           pa.total_returned_amount,
           ROW_NUMBER() OVER (PARTITION BY tc.c_customer_sk ORDER BY pa.total_net_profit DESC) as profit_rank
    FROM top_customers tc
    JOIN profit_analysis pa ON tc.c_customer_sk = pa.ws_order_number
)
SELECT fr.c_first_name,
       fr.c_last_name,
       fr.total_net_profit,
       fr.total_returns,
       fr.total_returned_amount,
       CASE 
           WHEN fr.total_returns > 0 THEN 'Returns Present'
           ELSE 'No Returns'
       END AS return_status
FROM final_report fr
WHERE fr.profit_rank <= 3
ORDER BY fr.total_net_profit DESC;
