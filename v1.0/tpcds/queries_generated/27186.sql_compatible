
WITH AddressParts AS (
    SELECT
        ca_address_sk,
        INITCAP(TRIM(CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type))) AS full_address,
        ca_city,
        ca_state,
        CONCAT(ca_city, ', ', ca_state) AS city_state
    FROM
        customer_address
),
CustomerInfo AS (
    SELECT
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        ad.full_address,
        ad.city_state
    FROM
        customer c
    JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN
        AddressParts ad ON c.c_current_addr_sk = ad.ca_address_sk
),
SalesData AS (
    SELECT
        ws.bill_customer_sk,
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM
        web_sales ws
    GROUP BY
        ws.bill_customer_sk
)
SELECT
    ci.full_name,
    ci.cd_gender,
    ci.cd_marital_status,
    ci.full_address,
    ci.city_state,
    COALESCE(sd.total_sales, 0) AS total_sales,
    COALESCE(sd.order_count, 0) AS order_count
FROM
    CustomerInfo ci
LEFT JOIN
    SalesData sd ON ci.c_customer_sk = sd.bill_customer_sk
WHERE
    ci.cd_gender = 'F'
ORDER BY
    total_sales DESC
FETCH FIRST 100 ROWS ONLY;
