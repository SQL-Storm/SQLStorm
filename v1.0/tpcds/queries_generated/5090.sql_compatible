
WITH RankedSales AS (
    SELECT 
        s.s_store_name,
        SUM(w.ws_ext_sales_price) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY s.s_store_id ORDER BY SUM(w.ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        store AS s
    JOIN 
        web_sales AS w ON s.s_store_sk = w.ws_store_sk
    JOIN 
        date_dim AS d ON w.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2022
    GROUP BY 
        s.s_store_name, s.s_store_id
),
TopStores AS (
    SELECT 
        s_store_name,
        total_sales
    FROM 
        RankedSales
    WHERE 
        sales_rank <= 5
)
SELECT 
    ts.s_store_name,
    ts.total_sales,
    ca.ca_city,
    ca.ca_state,
    sm.sm_type AS shipping_method,
    ca.ca_country
FROM 
    TopStores AS ts
JOIN 
    customer AS c ON c.c_first_shipto_date_sk IN (SELECT DISTINCT c_first_shipto_date_sk FROM customer)
JOIN 
    customer_address AS ca ON c.c_current_addr_sk = ca.ca_address_sk
JOIN 
    ship_mode AS sm ON sm.sm_ship_mode_sk = (SELECT sm_ship_mode_sk FROM ship_mode LIMIT 1)
ORDER BY 
    ts.total_sales DESC;
