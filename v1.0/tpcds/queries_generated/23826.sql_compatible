
WITH RankedSales AS (
    SELECT 
        ws.web_site_sk,
        ws.ws_order_number,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        DENSE_RANK() OVER (PARTITION BY ws.web_site_sk ORDER BY SUM(ws.ws_ext_sales_price) DESC) AS rank
    FROM 
        web_sales ws
    INNER JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023 AND 
        dd.d_month_seq IN (1, 2, 3)
    GROUP BY 
        ws.web_site_sk, ws.ws_order_number
),
FrequentCustomers AS (
    SELECT 
        ws.ws_ship_customer_sk,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_ship_customer_sk
    HAVING 
        COUNT(DISTINCT ws.ws_order_number) > 5
)
SELECT 
    ca.ca_city,
    SUM(rs.total_sales) AS city_sales,
    COUNT(DISTINCT fc.ws_ship_customer_sk) AS frequent_customers,
    AVG(COALESCE(ws.ws_ext_discount_amt, 0)) AS avg_discount
FROM 
    RankedSales rs
JOIN 
    web_sales ws ON rs.ws_order_number = ws.ws_order_number
LEFT JOIN 
    customer_address ca ON ws.ws_ship_addr_sk = ca.ca_address_sk
LEFT JOIN 
    FrequentCustomers fc ON ws.ws_ship_customer_sk = fc.ws_ship_customer_sk
WHERE 
    ca.ca_state = 'CA' 
    AND (rs.rank < 5 OR fc.order_count IS NOT NULL)
    AND (ca.ca_city || '-' || ca.ca_state) NOT IN (
        SELECT 
            ca_city || '-' || ca_state
        FROM 
            customer_address 
        WHERE 
            ca_city IS NOT NULL AND 
            ca_state IS NOT NULL
        GROUP BY 
            ca_city, ca_state
        HAVING 
            COUNT(*) > 10
    )
GROUP BY 
    ca.ca_city
ORDER BY 
    city_sales DESC
LIMIT 10;
