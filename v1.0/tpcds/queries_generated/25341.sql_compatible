
WITH processed_addresses AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type, 
               CASE 
                   WHEN ca_suite_number IS NOT NULL THEN CONCAT(' Suite ', ca_suite_number) 
                   ELSE '' 
               END) AS full_address,
        ca_city,
        ca_state,
        ca_zip,
        ca_country
    FROM 
        customer_address
),
customer_demographics AS (
    SELECT 
        cd_demo_sk,
        cd_gender,
        cd_marital_status,
        cd_education_status,
        cd_purchase_estimate,
        cd_credit_rating,
        cd_dep_count,
        cd_dep_employed_count,
        cd_dep_college_count
    FROM 
        customer_demographics
),
address_density AS (
    SELECT
        ca_state,
        COUNT(*) AS total_addresses,
        COUNT(DISTINCT ca_city) AS unique_cities
    FROM 
        processed_addresses
    GROUP BY 
        ca_state
),
customer_info AS (
    SELECT
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        c.c_email_address,
        cd.cd_gender,
        cd.cd_marital_status,
        ad.total_addresses,
        ad.unique_cities
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        address_density ad ON ad.ca_state = (SELECT ca_state FROM customer_address WHERE ca_address_sk = c.c_current_addr_sk)
),
aggregated_info AS (
    SELECT
        c.cd_gender,
        COUNT(*) AS total_customers,
        AVG(cd_purchase_estimate) AS avg_purchase_estimate,
        SUM(CASE WHEN cd_marital_status = 'M' THEN 1 ELSE 0 END) AS married_customers,
        SUM(CASE WHEN cd_marital_status = 'S' THEN 1 ELSE 0 END) AS single_customers
    FROM 
        customer_info c
    GROUP BY 
        c.cd_gender
)
SELECT 
    cd_gender AS gender,
    total_customers,
    avg_purchase_estimate,
    married_customers,
    single_customers,
    (SELECT 
         COUNT(DISTINCT ca_state) 
     FROM customer_address) AS total_states,
    (SELECT 
         SUM(unique_cities) 
     FROM address_density) AS total_unique_cities
FROM 
    aggregated_info
ORDER BY 
    total_customers DESC;
