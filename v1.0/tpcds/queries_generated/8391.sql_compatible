
WITH ranked_sales AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_sales_price) AS total_sales,
        RANK() OVER (PARTITION BY ws.web_site_id ORDER BY SUM(ws.ws_sales_price) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2001 
        AND dd.d_moy IN (6, 7) 
    GROUP BY 
        ws.web_site_id
),
top_sales AS (
    SELECT 
        web_site_id,
        total_sales
    FROM 
        ranked_sales
    WHERE 
        sales_rank <= 5
)
SELECT 
    w.web_site_id,
    w.web_name,
    w.web_country,
    ts.total_sales,
    COUNT(DISTINCT ws.ws_order_number) AS total_orders,
    AVG(ws.ws_sales_price) AS avg_order_value
FROM 
    web_site w
JOIN 
    top_sales ts ON w.web_site_id = ts.web_site_id
LEFT JOIN 
    web_sales ws ON w.web_site_sk = ws.ws_web_site_sk AND ws.ws_sold_date_sk IN (SELECT d_date_sk FROM date_dim WHERE d_year = 2001 AND d_moy IN (6, 7))
GROUP BY 
    w.web_site_id, w.web_name, w.web_country, ts.total_sales
ORDER BY 
    ts.total_sales DESC;
