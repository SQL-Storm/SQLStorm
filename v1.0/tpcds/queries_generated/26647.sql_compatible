
WITH address_split AS (
    SELECT 
        ca_address_sk,
        TRIM(SUBSTRING_INDEX(ca_street_name, ' ', 1)) AS first_word,
        TRIM(SUBSTRING_INDEX(ca_street_name, ' ', -1)) AS last_word,
        UPPER(ca_city) AS upper_city,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address
    FROM 
        customer_address
),
customer_info AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ad.first_word,
        ad.last_word,
        ad.upper_city,
        ad.full_address
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        address_split ad ON c.c_current_addr_sk = ad.ca_address_sk
),
sales_summary AS (
    SELECT 
        ci.full_name,
        SUM(ws.ws_quantity) AS total_quantity_sold,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        SUM(ws.ws_net_profit) AS total_profit
    FROM 
        web_sales ws
    JOIN 
        customer_info ci ON ws.ws_bill_customer_sk = ci.c_customer_sk
    GROUP BY 
        ci.full_name
)
SELECT 
    ss.full_name,
    ss.total_quantity_sold,
    ss.total_orders,
    ss.total_profit,
    ss.total_profit / NULLIF(ss.total_orders, 0) AS avg_profit_per_order,
    LEFT(ss.full_name, LOCATE(' ', ss.full_name)) AS first_name,
    RIGHT(ss.full_name, LOCATE(' ', REVERSE(ss.full_name)) - 1) AS last_name,
    ad.first_word,
    ad.last_word,
    ad.upper_city,
    ad.full_address
FROM 
    sales_summary ss
JOIN 
    customer_info ci ON ss.full_name = ci.full_name
JOIN 
    address_split ad ON ci.c_customer_sk = ad.ca_address_sk
WHERE 
    ss.total_profit > (SELECT AVG(total_profit) FROM sales_summary)
ORDER BY 
    ss.total_profit DESC;
