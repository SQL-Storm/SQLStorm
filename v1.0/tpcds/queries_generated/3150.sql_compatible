
WITH RankedWebSales AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_ship_date_sk,
        ws.ws_item_sk,
        ws.ws_quantity,
        ws.ws_net_paid,
        RANK() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_ship_date_sk DESC) AS sales_rank
    FROM 
        web_sales ws
    WHERE 
        ws.ws_ship_date_sk >= (SELECT MAX(d_date_sk) 
                                FROM date_dim 
                                WHERE d_year = 2023)
),
CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_paid) AS total_spent
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    GROUP BY 
        c.c_customer_sk
),
ReturnMetrics AS (
    SELECT 
        sr_item_sk,
        COUNT(*) AS total_returns,
        SUM(sr_return_amt) AS total_return_amount,
        AVG(sr_return_quantity) AS avg_return_quantity
    FROM 
        store_returns
    WHERE 
        sr_returned_date_sk > (SELECT MIN(d_date_sk) 
                                FROM date_dim 
                                WHERE d_year = 2022)
    GROUP BY 
        sr_item_sk
)
SELECT 
    ca.*, 
    cd.cd_gender,
    ws_item.item_desc, 
    CTE.total_spent, 
    COALESCE(RM.total_returns, 0) AS total_returns, 
    COALESCE(RM.total_return_amount, 0) AS total_return_amount
FROM 
    customer_address ca
LEFT JOIN 
    customer c ON ca.ca_address_sk = c.c_current_addr_sk
LEFT JOIN 
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
JOIN 
    RankedWebSales rws ON rws.ws_item_sk = c.c_customer_sk
JOIN 
    CustomerSales CTE ON c.c_customer_sk = CTE.c_customer_sk
LEFT JOIN 
    ReturnMetrics RM ON rws.ws_item_sk = RM.sr_item_sk
WHERE 
    cd.cd_gender = 'M' 
    AND CTE.total_quantity > 10
    AND rws.sales_rank = 1
ORDER BY 
    CTE.total_spent DESC, 
    total_returns ASC
FETCH FIRST 100 ROWS ONLY;
