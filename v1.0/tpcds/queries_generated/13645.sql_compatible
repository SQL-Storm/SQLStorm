
SELECT 
    c.c_customer_id, 
    SUM(ss.qty) AS total_quantity_sold, 
    SUM(ss.ss_ext_sales_price) AS total_sales 
FROM 
    customer c 
JOIN 
    store_sales ss ON c.c_customer_sk = ss.ss_customer_sk 
JOIN 
    date_dim d ON ss.ss_sold_date_sk = d.d_date_sk 
WHERE 
    d.d_year = 2023 AND 
    d.d_month = 10 
GROUP BY 
    c.c_customer_id 
ORDER BY 
    total_sales DESC 
FETCH FIRST 100 ROWS ONLY;
