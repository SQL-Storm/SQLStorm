
WITH RankedSales AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        DENSE_RANK() OVER (PARTITION BY ws.web_site_web_site_sk ORDER BY SUM(ws.ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        web_site w ON ws.ws_web_site_sk = w.web_site_sk
    WHERE 
        ws.ws_sold_date_sk = (SELECT MAX(d.d_date_sk) 
                               FROM date_dim d 
                               WHERE d.d_date >= DATE '2002-10-01' - INTERVAL '1 YEAR')
    GROUP BY 
        ws.web_site_id, ws.web_site_sk
), TopSales AS (
    SELECT 
        web_site_id, 
        total_sales, 
        order_count
    FROM 
        RankedSales 
    WHERE 
        sales_rank = 1
), CustomerReturns AS (
    SELECT 
        COUNT(DISTINCT wr.wr_returning_customer_sk) AS return_customers,
        SUM(wr.wr_return_amt_inc_tax) AS total_return_amt,
        wr.wr_reason_sk
    FROM 
        web_returns wr
    JOIN 
        reason r ON wr.wr_reason_sk = r.r_reason_sk
    WHERE 
        wr.wr_returned_date_sk >= (SELECT MIN(d.d_date_sk) 
                                     FROM date_dim d 
                                     WHERE d.d_date < DATE '2002-10-01')
    GROUP BY 
        wr.wr_reason_sk
)
SELECT 
    ts.web_site_id,
    ts.total_sales,
    ts.order_count,
    COALESCE(cr.return_customers, 0) AS return_customers,
    COALESCE(cr.total_return_amt, 0) AS total_return_amt
FROM 
    TopSales ts
LEFT OUTER JOIN 
    CustomerReturns cr ON cr.wr_reason_sk = 1 
WHERE 
    ts.total_sales > (
        SELECT AVG(total_sales) 
        FROM TopSales
    )
ORDER BY 
    ts.total_sales DESC
FETCH FIRST 10 ROWS ONLY;
