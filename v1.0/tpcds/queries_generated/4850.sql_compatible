
WITH customer_sales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_paid) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
sales_rank AS (
    SELECT 
        cs.c_customer_sk,
        cs.c_first_name,
        cs.c_last_name,
        cs.total_sales,
        cs.total_orders,
        RANK() OVER (ORDER BY cs.total_sales DESC) AS sales_rank
    FROM 
        customer_sales cs
),
high_value_customers AS (
    SELECT 
        sr.c_customer_sk,
        sr.c_first_name,
        sr.c_last_name,
        sr.total_sales,
        sr.total_orders
    FROM 
        sales_rank sr
    WHERE 
        sr.sales_rank <= 10
),
returned_sales AS (
    SELECT 
        c.c_customer_sk,
        COUNT(cr.cr_order_number) AS total_returns,
        SUM(cr.cr_return_amt) AS total_return_amount
    FROM 
        store_returns cr
    JOIN 
        customer c ON cr.sr_customer_sk = c.c_customer_sk
    GROUP BY 
        c.c_customer_sk
)
SELECT 
    hvc.c_first_name,
    hvc.c_last_name,
    hvc.total_sales,
    hvc.total_orders,
    COALESCE(rs.total_returns, 0) AS total_returns,
    COALESCE(rs.total_return_amount, 0) AS total_return_amount,
    CASE 
        WHEN hvc.total_sales > 1000 THEN 'High Value'
        ELSE 'Value'
    END AS customer_value_type
FROM 
    high_value_customers hvc
LEFT JOIN 
    returned_sales rs ON hvc.c_customer_sk = rs.c_customer_sk
ORDER BY 
    hvc.total_sales DESC;
