
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        AVG(ws.ws_net_profit) AS avg_profit
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id
),
HighValueCustomers AS (
    SELECT 
        c.c_customer_id,
        cs.total_sales,
        cs.total_orders,
        cs.avg_profit
    FROM 
        CustomerSales cs
    JOIN 
        customer_demographics cd ON cs.c_customer_id = cd.cd_demo_sk
    WHERE 
        cs.total_sales > (SELECT AVG(total_sales) FROM CustomerSales)
)
SELECT 
    c.c_first_name,
    c.c_last_name,
    hvc.total_sales,
    hvc.total_orders,
    hvc.avg_profit,
    d.d_year,
    COUNT(DISTINCT ws.ws_order_number) AS order_count,
    SUM(ws.ws_ext_sales_price) AS total_revenue
FROM 
    HighValueCustomers hvc
JOIN 
    customer c ON hvc.c_customer_id = c.c_customer_id
JOIN 
    web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
JOIN 
    date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
GROUP BY 
    c.c_first_name, c.c_last_name, hvc.total_sales, hvc.total_orders, hvc.avg_profit, d.d_year
ORDER BY 
    total_revenue DESC
FETCH FIRST 10 ROWS ONLY;
