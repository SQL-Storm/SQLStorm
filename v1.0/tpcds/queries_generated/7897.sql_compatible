
WITH SalesData AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_sales_price) AS total_sales,
        SUM(ws.ws_net_profit) AS total_net_profit,
        d.d_year AS sales_year,
        c.cd_gender AS customer_gender,
        h.hd_income_band_sk AS income_band
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    LEFT JOIN 
        household_demographics h ON c.c_current_hdemo_sk = h.hd_demo_sk
    WHERE 
        d.d_year BETWEEN 2018 AND 2023
    GROUP BY 
        ws.ws_item_sk, d.d_year, c.cd_gender, h.hd_income_band_sk
),
RankedSales AS (
    SELECT 
        sales_year,
        customer_gender,
        income_band,
        total_quantity,
        total_sales,
        total_net_profit,
        RANK() OVER (PARTITION BY sales_year, customer_gender ORDER BY total_net_profit DESC) AS rank
    FROM 
        SalesData
)
SELECT 
    sales_year,
    customer_gender,
    income_band,
    SUM(total_quantity) AS avg_quantity,
    SUM(total_sales) AS avg_sales,
    SUM(total_net_profit) AS avg_net_profit
FROM 
    RankedSales
WHERE 
    rank <= 5
GROUP BY 
    sales_year, customer_gender, income_band
ORDER BY 
    sales_year, customer_gender, avg_net_profit DESC;
