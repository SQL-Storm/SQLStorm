
WITH ranked_sales AS (
    SELECT 
        ws.ws_item_sk,
        ws.ws_order_number,
        ws.ws_sales_price,
        ws.ws_quantity,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_sales_price DESC) AS rank_sales,
        COALESCE(NULLIF(ws.ws_net_paid, 0), ws.ws_net_profit) AS effective_amount
    FROM 
        web_sales ws
    WHERE 
        ws.ws_sold_date_sk >= (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2022) - 30
),
customer_summary AS (
    SELECT 
        c.c_customer_sk,
        SUM(CASE WHEN cd.cd_gender = 'M' THEN 1 ELSE 0 END) AS male_count,
        SUM(CASE WHEN cd.cd_gender = 'F' THEN 1 ELSE 0 END) AS female_count,
        COUNT(DISTINCT c.c_current_addr_sk) AS addresses_count,
        MAX(cd.cd_purchase_estimate) AS max_purchase_estimate
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        c.c_customer_sk
),
sales_analysis AS (
    SELECT 
        cs.cs_item_sk,
        SUM(cs.cs_quantity) AS total_quantity,
        AVG(cs.cs_sales_price) AS avg_price,
        MAX(cs.cs_ext_sales_price) AS max_sales,
        MIN(cs.cs_ext_sales_price) AS min_sales
    FROM 
        catalog_sales cs
    INNER JOIN 
        time_dim t ON cs.cs_sold_date_sk = t.d_date_sk
    WHERE 
        t.d_year = 2022
    GROUP BY 
        cs.cs_item_sk
),
item_details AS (
    SELECT 
        i.i_item_sk,
        i.i_item_id,
        i.i_product_name,
        sa.total_quantity,
        sa.avg_price,
        sa.max_sales,
        sa.min_sales
    FROM 
        item i
    LEFT JOIN 
        sales_analysis sa ON i.i_item_sk = sa.cs_item_sk
)
SELECT 
    id.i_item_id,
    id.i_product_name,
    rs.rank_sales,
    COALESCE(id.total_quantity, 0) AS total_quantity,
    COALESCE(id.avg_price, 0) AS avg_price,
    COALESCE(id.max_sales, 0) AS max_sales,
    COALESCE(id.min_sales, 0) AS min_sales,
    cs.male_count,
    cs.female_count,
    cs.addresses_count,
    cs.max_purchase_estimate
FROM 
    ranked_sales rs
JOIN 
    item_details id ON rs.ws_item_sk = id.i_item_sk 
JOIN 
    customer_summary cs ON cs.c_customer_sk = (
        SELECT DISTINCT ws.ws_bill_customer_sk 
        FROM web_sales ws 
        WHERE ws.ws_order_number = rs.ws_order_number 
        LIMIT 1
    )
WHERE 
    rs.rank_sales = 1 
    AND (COALESCE(id.total_quantity, 0) >= 100 OR COALESCE(id.avg_price, 0) > 50)
ORDER BY 
    rs.rank_sales,
    cs.max_purchase_estimate DESC;
