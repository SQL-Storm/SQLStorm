
WITH customer_stats AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        SUM(ws.ws_net_paid) AS total_spent,
        COUNT(ws.ws_order_number) AS total_orders,
        DENSE_RANK() OVER (PARTITION BY cd.cd_gender ORDER BY SUM(ws.ws_net_paid) DESC) AS rank_per_gender
    FROM 
        customer c
        JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
        LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status
),
top_customers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cs.total_spent,
        cs.rank_per_gender
    FROM 
        customer_stats cs
        JOIN customer c ON cs.c_customer_sk = c.c_customer_sk
    WHERE 
        cs.rank_per_gender <= 10
),
store_summary AS (
    SELECT 
        ss.s_store_sk,
        SUM(ss.ss_net_paid) AS total_sales,
        COUNT(DISTINCT ss.ss_ticket_number) AS total_transactions
    FROM 
        store_sales ss
    GROUP BY 
        ss.s_store_sk
)
SELECT 
    s.s_store_name,
    COALESCE(cs.total_spent, 0) AS top_customer_spent,
    COALESCE(ss.total_sales, 0) AS store_sales,
    ROUND((COALESCE(cs.total_spent, 0) / NULLIF(ss.total_sales, 0)) * 100, 2) AS customer_spending_percentage,
    COUNT(DISTINCT c.c_customer_sk) AS unique_customers
FROM 
    store s
    LEFT JOIN store_summary ss ON s.s_store_sk = ss.s_store_sk
    LEFT JOIN top_customers cs ON cs.c_customer_sk = (
        SELECT c.c_customer_sk
        FROM customer c
        WHERE c.c_current_addr_sk IS NOT NULL AND 
              c.c_first_shipto_date_sk IS NOT NULL
        ORDER BY cs.total_spent DESC
        LIMIT 1
    )
GROUP BY 
    s.s_store_sk, s.s_store_name, ss.total_sales, cs.total_spent
ORDER BY 
    s.s_store_name;
