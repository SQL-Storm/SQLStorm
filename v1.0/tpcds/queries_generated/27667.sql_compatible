
WITH AddressDetails AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip
    FROM 
        customer_address
),
TextAggregate AS (
    SELECT 
        ca_state,
        STRING_AGG(full_address, '; ') AS aggregated_addresses
    FROM 
        AddressDetails
    GROUP BY 
        ca_state
)

SELECT 
    a.ca_state,
    a.aggregated_addresses,
    COUNT(DISTINCT c.c_customer_sk) AS customer_count,
    AVG(c.cd_purchase_estimate) AS avg_purchase_estimate,
    STRING_AGG(CONCAT(c.c_first_name, ' ', c.c_last_name), ', ') AS customer_names
FROM 
    TextAggregate a
JOIN 
    customer c ON c.c_current_addr_sk = (SELECT ca_address_sk FROM customer_address WHERE ca_state = a.ca_state LIMIT 1)
JOIN 
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
GROUP BY 
    a.ca_state, a.aggregated_addresses
ORDER BY 
    customer_count DESC;
