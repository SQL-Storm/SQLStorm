
WITH sales_summary AS (
    SELECT 
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws_order_number) AS total_orders,
        RANK() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_net_profit) DESC) AS profit_rank
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk BETWEEN 2459640 AND 2459650 
    GROUP BY 
        ws_item_sk
),
top_items AS (
    SELECT 
        ss.ws_item_sk,
        ss.total_quantity,
        ss.total_profit,
        ss.total_orders,
        ROW_NUMBER() OVER (ORDER BY ss.total_profit DESC) AS item_rank
    FROM 
        sales_summary ss
    WHERE
        ss.profit_rank <= 10
),
item_details AS (
    SELECT 
        i.i_item_id,
        i.i_item_desc,
        i.i_brand,
        ii.total_quantity,
        ii.total_profit,
        ii.total_orders
    FROM 
        item i
    JOIN 
        top_items ii ON i.i_item_sk = ii.ws_item_sk
)
SELECT 
    id.i_item_id,
    id.i_item_desc,
    id.i_brand,
    COALESCE(NULLIF(id.total_quantity, 0), 'No Sales') AS sales_quantity,
    COALESCE(NULLIF(id.total_profit, 0), 0) AS sales_profit,
    id.total_orders
FROM 
    item_details id
JOIN 
    customer_demographics cd ON cd.cd_demo_sk = (
        SELECT c_current_cdemo_sk FROM customer 
        WHERE c_customer_sk IN (
            SELECT DISTINCT ws_bill_customer_sk FROM web_sales 
            WHERE ws_item_sk = id.ws_item_sk 
            LIMIT 1
        )
    )
LEFT JOIN 
    call_center cc ON cc.cc_call_center_sk = (
        SELECT DISTINCT cc_call_center_sk FROM store_sales 
        WHERE ss_item_sk = id.ws_item_sk 
        LIMIT 1
    )
WHERE 
    (cd.cd_gender = 'F' AND cd.cd_marital_status = 'M') OR 
    (cd.cd_gender = 'M' AND cd.cd_marital_status IS NULL)
ORDER BY 
    id.total_profit DESC, id.i_item_id;
