
WITH TopCustomers AS (
    SELECT 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        SUM(ws.ws_net_paid_inc_tax) AS total_spent,
        DENSE_RANK() OVER (ORDER BY SUM(ws.ws_net_paid_inc_tax) DESC) AS rank
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        c.c_current_cdemo_sk IS NOT NULL
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
), 
CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        MAX(cd.cd_purchase_estimate) AS max_purchase_estimate,
        STRING_AGG(DISTINCT cd.cd_gender) AS genders,
        COUNT(DISTINCT cd.cd_demo_sk) AS demographic_count
    FROM 
        customer_demographics cd
    JOIN 
        TopCustomers tc ON cd.cd_demo_sk = tc.c_current_cdemo_sk 
    GROUP BY 
        cd.cd_demo_sk
),
WarehouseInfo AS (
    SELECT 
        w.w_warehouse_sk,
        COUNT(DISTINCT ws.ws_item_sk) AS unique_items_shipped,
        SUM(ws.ws_ext_ship_cost) AS total_ship_cost
    FROM 
        warehouse w
    JOIN 
        web_sales ws ON w.w_warehouse_sk = ws.ws_warehouse_sk
    GROUP BY 
        w.w_warehouse_sk
    HAVING 
        COUNT(DISTINCT ws.ws_item_sk) > 10
),
ReturnAnalysis AS (
    SELECT 
        sr_returned_date_sk,
        COUNT(*) AS total_returns,
        SUM(sr_return_amt_inc_tax) AS total_return_amount
    FROM 
        store_returns 
    GROUP BY 
        sr_returned_date_sk
    HAVING 
        SUM(sr_return_amt_inc_tax) > 500
)
SELECT 
    tc.c_first_name, 
    tc.c_last_name, 
    tc.total_spent, 
    cd.max_purchase_estimate, 
    cd.genders, 
    wi.unique_items_shipped, 
    wi.total_ship_cost, 
    ra.total_returns, 
    ra.total_return_amount
FROM 
    TopCustomers tc
LEFT JOIN 
    CustomerDemographics cd ON cd.cd_demo_sk = tc.c_customer_sk
JOIN 
    WarehouseInfo wi ON wi.w_warehouse_sk = (SELECT 
                                                w.w_warehouse_sk 
                                              FROM 
                                                warehouse w 
                                              ORDER BY 
                                                w.w_warehouse_sq_ft DESC 
                                              LIMIT 1)
LEFT JOIN 
    ReturnAnalysis ra ON ra.sr_returned_date_sk = (SELECT 
                                                        d.d_date_sk 
                                                    FROM 
                                                        date_dim d 
                                                    WHERE 
                                                        d.d_date = DATE '2002-10-01' 
                                                    ORDER BY 
                                                        d.d_date DESC 
                                                    LIMIT 1)
WHERE 
    tc.rank <= 10
ORDER BY 
    tc.total_spent DESC;
