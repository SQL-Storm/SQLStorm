
WITH RECURSIVE sales_summary AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws_order_number) AS order_count,
        DENSE_RANK() OVER (ORDER BY SUM(ws_net_profit) DESC) AS rank
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk BETWEEN (SELECT MIN(d_date_sk) FROM date_dim WHERE d_year = 2023) 
                            AND (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2023)
    GROUP BY 
        ws_bill_customer_sk
),
customer_info AS (
    SELECT 
        c_customer_sk,
        CONCAT(c_first_name, ' ', c_last_name) AS full_name,
        cd_gender,
        cd_marital_status,
        cd_education_status,
        ib_income_band_sk,
        ROW_NUMBER() OVER (PARTITION BY ib_income_band_sk ORDER BY c_customer_sk) AS income_rank
    FROM 
        customer
    JOIN 
        customer_demographics ON c_current_cdemo_sk = cd_demo_sk
    LEFT JOIN 
        household_demographics ON c_customer_sk = hd_demo_sk
)
SELECT 
    ci.full_name,
    ci.cd_gender,
    ci.cd_marital_status,
    ci.cd_education_status,
    ss.total_profit,
    ss.order_count,
    CASE 
        WHEN ss.rank <= 10 THEN 'Top 10 Customers'
        WHEN ss.rank BETWEEN 11 AND 50 THEN 'Top 50 Customers'
        ELSE 'Other'
    END AS customer_group,
    COALESCE(ib.ib_income_band_sk, -1) AS income_band
FROM 
    sales_summary ss
JOIN 
    customer_info ci ON ss.ws_bill_customer_sk = ci.c_customer_sk
LEFT JOIN 
    income_band ib ON ci.ib_income_band_sk = ib.ib_income_band_sk
WHERE 
    ci.cd_gender = 'F' AND 
    (ci.cd_marital_status IS NULL OR ci.cd_marital_status = 'S')
    AND ci.income_rank <= 5
UNION ALL
SELECT 
    'Total Count' AS full_name,
    NULL AS cd_gender,
    NULL AS cd_marital_status,
    NULL AS cd_education_status,
    SUM(ss.total_profit) AS total_profit,
    COUNT(ss.order_count) AS order_count,
    'Aggregate' AS customer_group,
    NULL AS income_band
FROM 
    sales_summary ss
WHERE 
    ss.order_count > (
        SELECT 
            AVG(order_count) 
        FROM 
            sales_summary
    )
GROUP BY 
    ss.ws_bill_customer_sk, ss.total_profit
ORDER BY 
    total_profit DESC, full_name;
