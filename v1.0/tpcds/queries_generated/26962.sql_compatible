
WITH RankedSales AS (
    SELECT 
        c.c_customer_id, 
        ca.ca_address_id, 
        cs.cs_sold_date_sk, 
        cs.cs_order_number, 
        cs.cs_quantity,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY cs.cs_sold_date_sk DESC) AS rn
    FROM customer c
    JOIN store_sales cs ON c.c_customer_sk = cs.ss_customer_sk
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
SalesSummary AS (
    SELECT 
        ca.ca_city,
        COUNT(DISTINCT c_customer_id) AS unique_customers,
        SUM(cs_quantity) AS total_quantity,
        MAX(cs_order_number) AS last_order_number
    FROM RankedSales rs
    JOIN customer_address ca ON rs.ca_address_id = ca.ca_address_id
    WHERE rs.rn = 1
    GROUP BY ca.ca_city
),
DateSales AS (
    SELECT 
        d.d_date AS sales_date, 
        SUM(ss.ss_ext_sales_price) AS total_sales
    FROM store_sales ss
    JOIN date_dim d ON ss.ss_sold_date_sk = d.d_date_sk
    GROUP BY d.d_date
)
SELECT 
    ss.ca_city, 
    ss.unique_customers, 
    ss.total_quantity, 
    ds.sales_date, 
    ds.total_sales,
    CONCAT('Sales in ', ss.ca_city, ' on ', ds.sales_date, ' Total: ', ds.total_sales) AS sales_report
FROM SalesSummary ss
JOIN DateSales ds ON ds.sales_date = DATE '2002-10-01'
ORDER BY ss.ca_city;
