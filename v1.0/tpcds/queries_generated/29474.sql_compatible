
WITH CustomerInfo AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        LOWER(CONCAT(c.c_first_name, ' ', c.c_last_name)) AS full_name_lower
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
FilteredCustomers AS (
    SELECT 
        c.*, 
        LENGTH(full_name_lower) AS name_length,
        REGEXP_REPLACE(full_name_lower, '[^a-z]', '') AS cleaned_name
    FROM 
        CustomerInfo c
    WHERE 
        c.ca_state = 'CA' AND
        c.cd_gender = 'M' AND
        c.cd_marital_status = 'S' AND
        LENGTH(ca_city) > 4
)
SELECT 
    ca.ca_city,
    COUNT(*) AS customer_count,
    AVG(name_length) AS avg_name_length,
    COUNT(DISTINCT cleaned_name) AS unique_cleaned_names
FROM 
    FilteredCustomers fc
JOIN 
    customer_address ca ON fc.c_current_addr_sk = ca.ca_address_sk
GROUP BY 
    ca.ca_city
ORDER BY 
    customer_count DESC, 
    avg_name_length ASC
LIMIT 10;
