
WITH RankedSales AS (
    SELECT 
        ws_item_sk,
        ws_quantity,
        ws_net_paid,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY ws_sold_date_sk DESC) AS rn
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk >= (SELECT MAX(d_date_sk) - 30 FROM date_dim)
),
CustomerDetails AS (
    SELECT 
        c.c_customer_id,
        cd.cd_gender,
        cd.cd_marital_status,
        ca.ca_country,
        COUNT(DISTINCT c.c_customer_sk) AS purchase_count
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    GROUP BY 
        c.c_customer_id, cd.cd_gender, cd.cd_marital_status, ca.ca_country
),
SalesSummary AS (
    SELECT 
        i.i_item_id,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_paid) AS total_net_paid,
        AVG(ws.ws_net_paid) AS avg_net_paid
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    GROUP BY 
        i.i_item_id
),
CustomerIncome AS (
    SELECT 
        c.c_customer_id,
        ib.ib_lower_bound,
        ib.ib_upper_bound
    FROM 
        customer c
    JOIN 
        household_demographics hd ON c.c_current_hdemo_sk = hd.hd_demo_sk
    JOIN 
        income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
)
SELECT 
    cd.c_customer_id,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.ca_country,
    ci.ib_lower_bound,
    ci.ib_upper_bound,
    ss.total_quantity,
    ss.total_net_paid,
    ss.avg_net_paid,
    rs.ws_quantity AS last_month_quantity
FROM 
    CustomerDetails cd
LEFT JOIN 
    SalesSummary ss ON cd.purchase_count > 0
LEFT JOIN 
    CustomerIncome ci ON cd.c_customer_id = ci.c_customer_id
LEFT JOIN 
    RankedSales rs ON rs.rn = 1 AND ss.i_item_id = rs.ws_item_sk
WHERE 
    cd.cd_gender = 'F' 
    AND cd.ca_country IS NOT NULL
    AND (ci.ib_lower_bound IS NOT NULL OR ci.ib_upper_bound IS NOT NULL)
ORDER BY 
    ss.total_net_paid DESC;
