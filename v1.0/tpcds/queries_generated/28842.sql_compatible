
WITH AddressDetails AS (
    SELECT 
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip,
        ca_country
    FROM 
        customer_address
),
Demographics AS (
    SELECT 
        cd_gender,
        cd_marital_status,
        cd_education_status,
        cd_purchase_estimate,
        cd_credit_rating,
        cd_dep_count
    FROM 
        customer_demographics
),
CustomerInfo AS (
    SELECT 
        c.c_first_name,
        c.c_last_name,
        c.c_email_address,
        ad.full_address,
        ad.ca_city,
        ad.ca_state,
        dm.cd_gender,
        dm.cd_marital_status
    FROM 
        customer c
    JOIN 
        AddressDetails ad ON c.c_current_addr_sk = ad.ca_address_sk
    JOIN 
        Demographics dm ON c.c_current_cdemo_sk = dm.cd_demo_sk
),
ItemDetails AS (
    SELECT 
        i_item_id,
        i_item_desc,
        i_brand,
        i_current_price
    FROM 
        item
),
SalesData AS (
    SELECT 
        ws.ws_order_number,
        ci.c_first_name,
        ci.c_last_name,
        ci.c_email_address,
        id.i_item_id,
        id.i_item_desc,
        id.i_brand,
        ws.ws_sales_price,
        ws.ws_quantity,
        ws.ws_sold_date_sk
    FROM 
        web_sales ws
    JOIN 
        CustomerInfo ci ON ws.ws_bill_customer_sk = ci.c_customer_sk
    JOIN 
        ItemDetails id ON ws.ws_item_sk = id.i_item_sk
)
SELECT 
    DATE_FORMAT(d.d_date, '%Y-%m') AS sale_month,
    SUM(sd.ws_sales_price * sd.ws_quantity) AS total_sales,
    COUNT(DISTINCT sd.ws_order_number) AS num_orders,
    COUNT(DISTINCT sd.c_email_address) AS unique_customers,
    AVG(sd.ws_sales_price) AS average_order_value,
    MAX(sd.ws_sales_price) AS max_order_value
FROM 
    SalesData sd
JOIN 
    date_dim d ON sd.ws_sold_date_sk = d.d_date_sk
GROUP BY 
    DATE_FORMAT(d.d_date, '%Y-%m')
ORDER BY 
    sale_month DESC;
