
WITH sales_summary AS (
    SELECT 
        ws_bill_customer_sk AS customer_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(ws_order_number) AS order_count,
        MAX(ws_sold_date_sk) AS last_purchase_date
    FROM web_sales
    GROUP BY ws_bill_customer_sk
),
customer_info AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        ca.ca_city
    FROM customer AS c
    JOIN customer_demographics AS cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN customer_address AS ca ON c.c_current_addr_sk = ca.ca_address_sk
)
SELECT 
    ci.c_first_name,
    ci.c_last_name,
    ci.ca_city,
    ci.cd_gender,
    ci.cd_marital_status,
    COALESCE(ss.total_sales, 0) AS total_sales,
    COALESCE(ss.order_count, 0) AS order_count,
    CASE 
        WHEN ss.last_purchase_date IS NULL THEN 'Never Purchased'
        WHEN ss.last_purchase_date >= (SELECT MAX(d_date) FROM date_dim WHERE d_holiday = 'Y') THEN 'Recent Purchaser'
        ELSE 'Inactive'
    END AS purchase_status
FROM customer_info AS ci
LEFT OUTER JOIN sales_summary AS ss ON ci.c_customer_sk = ss.customer_sk
WHERE ci.cd_gender = 'F' 
    AND (ci.cd_marital_status = 'M' OR ci.cd_marital_status IS NULL)
    AND (ci.ca_city LIKE 'New%' OR ci.ca_city IS NULL)
GROUP BY 
    ci.c_first_name,
    ci.c_last_name,
    ci.ca_city,
    ci.cd_gender,
    ci.cd_marital_status,
    ss.total_sales,
    ss.order_count,
    ss.last_purchase_date
ORDER BY total_sales DESC, ci.c_last_name, ci.c_first_name;
