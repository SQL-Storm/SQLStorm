
WITH Customer_Sales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_sales_price) AS total_sales
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
High_Value_Customers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cs.total_sales,
        cd.cd_gender,
        COALESCE(cd.cd_marital_status, 'U') AS marital_status,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM 
        Customer_Sales cs
    JOIN 
        customer c ON cs.c_customer_sk = c.c_customer_sk
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        cs.total_sales > 1000
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status
),
Sales_By_Gender AS (
    SELECT 
        hd.marital_status,
        hd.cd_gender,
        COUNT(hd.c_customer_sk) AS customer_count,
        SUM(hd.total_sales) AS total_sales
    FROM 
        High_Value_Customers hd
    GROUP BY 
        hd.marital_status, hd.cd_gender
)
SELECT 
    s.marital_status,
    s.cd_gender,
    s.customer_count,
    s.total_sales,
    ROUND((s.total_sales / NULLIF(s.customer_count, 0)), 2) AS avg_sales_per_customer
FROM 
    Sales_By_Gender s
WHERE 
    s.customer_count > 10
ORDER BY 
    s.total_sales DESC;
