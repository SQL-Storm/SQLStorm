
WITH sales_summary AS (
    SELECT 
        w.w_warehouse_name,
        i.i_item_desc,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        AVG(ws.ws_net_profit) AS avg_net_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    JOIN 
        warehouse w ON ws.ws_warehouse_sk = w.w_warehouse_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2022 
        AND ws.ws_ship_mode_sk IN (SELECT sm.sm_ship_mode_sk FROM ship_mode sm WHERE sm.sm_type = 'Standard')
    GROUP BY 
        w.w_warehouse_name, i.i_item_desc
),
top_sales AS (
    SELECT 
        w.w_warehouse_name AS warehouse_name,
        i.i_item_desc AS item_desc,
        ss.total_quantity,
        ss.total_sales,
        ss.avg_net_profit,
        RANK() OVER (PARTITION BY w.w_warehouse_name ORDER BY ss.total_sales DESC) AS sales_rank
    FROM 
        sales_summary ss
)
SELECT 
    warehouse_name,
    item_desc,
    total_quantity,
    total_sales,
    avg_net_profit
FROM 
    top_sales
WHERE 
    sales_rank <= 5
ORDER BY 
    warehouse_name, total_sales DESC;
