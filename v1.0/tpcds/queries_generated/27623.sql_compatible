
WITH AddressParts AS (
    SELECT
        ca_address_sk,
        TRIM(CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type)) AS full_address,
        ca_city,
        ca_state,
        ca_zip,
        CONCAT_WS(', ', ca_city, ca_state, ca_zip) AS location_summary
    FROM
        customer_address
), DemographicGroups AS (
    SELECT
        cd_demo_sk,
        cd_gender,
        cd_marital_status,
        cd_education_status,
        COUNT(DISTINCT c_customer_sk) AS customer_count
    FROM
        customer_demographics
    LEFT JOIN customer ON customer.c_current_cdemo_sk = cd_demo_sk
    GROUP BY
        cd_demo_sk, cd_gender, cd_marital_status, cd_education_status
), SalesData AS (
    SELECT
        ws.bill_customer_sk,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders
    FROM
        web_sales AS ws
    GROUP BY
        ws.bill_customer_sk
)
SELECT
    a.full_address,
    a.location_summary,
    d.cd_gender,
    d.cd_marital_status,
    d.cd_education_status,
    d.customer_count,
    s.total_sales,
    s.total_orders
FROM
    AddressParts AS a
LEFT JOIN
    DemographicGroups AS d ON d.cd_demo_sk = (SELECT c_current_cdemo_sk FROM customer WHERE c_current_addr_sk = a.ca_address_sk LIMIT 1)
LEFT JOIN
    SalesData AS s ON s.bill_customer_sk = (SELECT c_customer_sk FROM customer WHERE c_current_addr_sk = a.ca_address_sk LIMIT 1)
WHERE
    a.ca_state = 'CA'
ORDER BY
    s.total_sales DESC, d.customer_count DESC
LIMIT 100;
