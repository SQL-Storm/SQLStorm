
WITH Address_Analysis AS (
    SELECT 
        ca_address_sk,
        ca_street_name,
        ca_city,
        ca_state,
        LENGTH(ca_street_name) AS street_name_length,
        UPPER(ca_city) AS city_uppercase,
        TRIM(ca_city) AS city_trimmed,
        REPLACE(ca_street_name, ' ', '-') AS street_name_replaced,
        CONCAT(ca_street_number, ' ', ca_street_name, ', ', ca_city, ', ', ca_state) AS full_address
    FROM 
        customer_address
),
Customer_Stats AS (
    SELECT 
        c.c_customer_sk,
        COUNT(ws.ws_order_number) AS total_orders,
        STRING_AGG(DISTINCT ca.city_uppercase, ', ') AS cities_ordered,
        MAX(cd.cd_purchase_estimate) AS max_purchase_estimate
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        Address_Analysis ca ON c.c_current_addr_sk = ca.ca_address_sk
    GROUP BY 
        c.c_customer_sk
),
Address_Stats AS (
    SELECT 
        city_uppercase,
        COUNT(DISTINCT ca_address_sk) AS unique_addresses,
        AVG(street_name_length) AS avg_street_name_length
    FROM 
        Address_Analysis
    GROUP BY 
        city_uppercase
)
SELECT 
    cs.c_customer_sk,
    cs.total_orders,
    cs.cities_ordered,
    cs.max_purchase_estimate,
    as.city_uppercase,
    as.unique_addresses,
    as.avg_street_name_length
FROM 
    Customer_Stats cs
JOIN 
    Address_Stats as ON cs.cities_ordered LIKE '%' || as.city_uppercase || '%'
ORDER BY 
    cs.total_orders DESC, 
    as.avg_street_name_length DESC;
