
WITH RECURSIVE CustomerHierarchy AS (
    SELECT c_customer_sk, c_first_name, c_last_name, c_preferred_cust_flag, c_current_addr_sk,
           1 AS level
    FROM customer
    WHERE c_current_addr_sk IS NOT NULL
    
    UNION ALL
    
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, c.c_preferred_cust_flag, c.c_current_addr_sk,
           ch.level + 1
    FROM customer AS c
    JOIN CustomerHierarchy AS ch ON c.c_current_addr_sk = ch.c_current_addr_sk
    WHERE ch.level < 3
),
DailySales AS (
    SELECT d.d_date, SUM(ws.ws_net_paid_inc_tax) AS total_net_paid
    FROM date_dim d
    LEFT JOIN web_sales ws ON d.d_date_sk = ws.ws_sold_date_sk
    GROUP BY d.d_date
),
FilteredSales AS (
    SELECT dh.hd_income_band_sk, SUM(ws.ws_net_profit) AS total_net_profit
    FROM household_demographics dh
    JOIN web_sales ws ON dh.hd_demo_sk = ws.ws_bill_cdemo_sk
    WHERE ws.ws_sold_date_sk >= (SELECT MIN(d_date_sk) FROM date_dim WHERE d_year = 2001)
    GROUP BY dh.hd_income_band_sk
)
SELECT DISTINCT 
    ch.c_first_name,
    ch.c_last_name,
    ch.c_preferred_cust_flag,
    COALESCE(d.d_date, 'No Sales') AS sales_date,
    COALESCE(ds.total_net_paid, 0) AS total_sales,
    COALESCE(fs.total_net_profit, 0) AS total_net_profit_per_income_band
FROM CustomerHierarchy ch
LEFT JOIN DailySales ds ON ds.d_date = DATE '2002-10-01'
LEFT JOIN FilteredSales fs ON fs.hd_income_band_sk = 
    (SELECT hd_income_band_sk FROM household_demographics WHERE hd_demo_sk = ch.c_current_addr_sk)
ORDER BY ch.c_last_name, ch.c_first_name;
