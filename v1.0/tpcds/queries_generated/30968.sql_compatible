
WITH RECURSIVE customer_hierarchy AS (
    SELECT c_customer_sk, c_first_name, c_last_name, c_current_cdemo_sk, 1 AS level
    FROM customer
    WHERE c_current_cdemo_sk IS NOT NULL
    UNION ALL
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, c.c_current_cdemo_sk, ch.level + 1
    FROM customer c
    JOIN customer_hierarchy ch ON c.c_current_cdemo_sk = ch.c_current_cdemo_sk
),
sales_summary AS (
    SELECT
        ws.ws_ship_mode_sk,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        SUM(ws.ws_net_profit) AS total_profit,
        AVG(ws.ws_net_paid_inc_tax) AS avg_net_paid
    FROM web_sales ws
    GROUP BY ws.ws_ship_mode_sk
),
customer_analysis AS (
    SELECT
        cd.cd_gender,
        cd.cd_marital_status,
        COUNT(DISTINCT c.c_customer_sk) AS total_customers,
        SUM(cd.cd_purchase_estimate) AS total_purchase_estimate
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY cd.cd_gender, cd.cd_marital_status
)
SELECT
    ca.ca_state,
    COUNT(DISTINCT ca.ca_address_sk) AS total_addresses,
    COALESCE(SUM(ss.total_profit), 0) AS total_profit_by_ship_mode,
    COALESCE(AVG(ss.avg_net_paid), 0) AS average_paid_by_ship_mode,
    MAX(ca.ca_address_sk) AS latest_address_id,
    cd.cd_gender,
    cd.cd_marital_status,
    ca.ca_country
FROM customer_address ca
LEFT OUTER JOIN sales_summary ss ON ca.ca_address_sk = (SELECT ws.ws_ship_addr_sk 
                                                         FROM web_sales ws 
                                                         WHERE ws.ws_ship_mode_sk IN (SELECT DISTINCT ws_ship_mode_sk 
                                                                                      FROM web_sales) 
                                                         LIMIT 1)
JOIN customer c ON c.c_current_addr_sk = ca.ca_address_sk
JOIN customer_analysis cd ON c.c_current_cdemo_sk = cd.cd_gender
GROUP BY ca.ca_state, cd.cd_gender, cd.cd_marital_status, ca.ca_country
HAVING COUNT(DISTINCT ca.ca_address_sk) > 5
ORDER BY total_addresses DESC;
