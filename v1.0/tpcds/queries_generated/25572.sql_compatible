
WITH customer_data AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        COALESCE(NULLIF(ca.ca_street_number, ''), 'N/A') || ' ' || COALESCE(NULLIF(ca.ca_street_name, ''), 'Unknown') || ' ' || COALESCE(NULLIF(ca.ca_city, ''), 'NA') AS full_address,
        cd.cd_purchase_estimate
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
date_range AS (
    SELECT 
        d.d_date_sk, 
        d.d_date,
        d.d_year
    FROM 
        date_dim d 
    WHERE 
        d.d_date BETWEEN '2021-01-01' AND '2021-12-31'
),
web_data AS (
    SELECT 
        ws.ws_sold_date_sk,
        SUM(ws.ws_net_profit) AS total_profit,
        SUM(ws.ws_quantity) AS total_quantity
    FROM 
        web_sales ws
    JOIN 
        date_range dr ON ws.ws_sold_date_sk = dr.d_date_sk
    GROUP BY 
        ws.ws_sold_date_sk
)
SELECT 
    cd.full_name,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.full_address,
    wd.total_profit,
    wd.total_quantity
FROM 
    customer_data cd
LEFT JOIN 
    web_data wd ON cd.c_customer_sk = (SELECT DISTINCT ws.ws_bill_customer_sk FROM web_sales ws WHERE ws.ws_sold_date_sk IN (SELECT d.d_date_sk FROM date_dim d WHERE d.d_year = 2021))
ORDER BY 
    wd.total_profit DESC
LIMIT 100;
