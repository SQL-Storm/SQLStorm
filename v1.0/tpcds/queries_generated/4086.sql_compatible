
WITH sales_summary AS (
    SELECT
        ws_sold_date_sk,
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_sales_price) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_sales_price) DESC) AS rank
    FROM
        web_sales
    GROUP BY
        ws_sold_date_sk, ws_item_sk
),
customer_with_gender AS (
    SELECT
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band_sk
    FROM
        customer c
    LEFT JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
ranked_sales AS (
    SELECT
        s.ss_store_sk,
        s.ss_item_sk,
        s.ss_ticket_number,
        s.ss_quantity,
        s.ss_net_profit,
        ROW_NUMBER() OVER (PARTITION BY s.ss_store_sk ORDER BY s.ss_net_profit DESC) AS profit_rank
    FROM
        store_sales s
),
store_info AS (
    SELECT
        s.s_store_sk,
        s.s_store_name,
        w.w_warehouse_name,
        w.w_country,
        CASE
            WHEN s.s_number_employees IS NULL THEN 'Unknown'
            ELSE CAST(s.s_number_employees AS VARCHAR(255))
        END AS employee_count
    FROM
        store s
    LEFT JOIN
        warehouse w ON s.s_store_sk = w.w_warehouse_sk
)
SELECT
    cs.c_first_name,
    cs.c_last_name,
    cs.cd_gender,
    cs.cd_marital_status,
    ss.ws_item_sk,
    ss.total_quantity,
    ss.total_sales,
    si.s_store_name,
    si.w_warehouse_name,
    si.w_country,
    COALESCE(rs.ss_net_profit, 0) AS store_net_profit,
    rs.profit_rank,
    ib.ib_income_band_sk
FROM
    customer_with_gender cs
JOIN
    sales_summary ss ON cs.c_customer_sk = ss.ws_item_sk
JOIN
    store_info si ON ss.ss_store_sk = si.s_store_sk
LEFT JOIN
    ranked_sales rs ON ss.ws_item_sk = rs.ss_item_sk AND rs.profit_rank <= 5
LEFT JOIN
    household_demographics ib ON cs.cd_income_band_sk = ib.hd_income_band_sk
WHERE
    cs.cd_gender = 'F' 
    AND ss.total_sales > (SELECT AVG(total_sales) FROM sales_summary)
ORDER BY
    ss.total_sales DESC,
    cs.c_last_name ASC;
