WITH RankedSales AS (
    SELECT 
        ws_bill_customer_sk,
        ws_item_sk,
        ws_ext_sales_price,
        ROW_NUMBER() OVER (PARTITION BY ws_bill_customer_sk ORDER BY ws_ext_sales_price DESC) AS rank
    FROM
        web_sales
    WHERE
        ws_ext_sales_price IS NOT NULL
),
CustomerSummary AS (
    SELECT 
        c.c_customer_sk,
        COALESCE(cd.credit_rating, 'Unknown') AS credit_rating,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        SUM(ws.ws_net_profit) AS total_profit
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, cd.credit_rating
),
TopItems AS (
    SELECT 
        r.ws_bill_customer_sk,
        r.ws_item_sk,
        SUM(r.ws_ext_sales_price) AS total_sales
    FROM 
        RankedSales r
    WHERE 
        r.rank <= 3
    GROUP BY 
        r.ws_bill_customer_sk, r.ws_item_sk
),
FinalReport AS (
    SELECT 
        cs.c_customer_sk,
        cs.credit_rating,
        COALESCE(SUM(ti.total_sales), 0) AS top_item_sales,
        cs.order_count,
        cs.total_profit,
        CASE 
            WHEN cs.total_profit IS NULL THEN 'No Profit Recorded'
            WHEN cs.total_profit < 0 THEN 'Loss'
            ELSE 'Profit'
        END AS profit_status
    FROM 
        CustomerSummary cs
    LEFT JOIN 
        TopItems ti ON cs.c_customer_sk = ti.ws_bill_customer_sk
    GROUP BY 
        cs.c_customer_sk, cs.credit_rating, cs.order_count, cs.total_profit
)
SELECT 
    fr.c_customer_sk,
    fr.credit_rating,
    fr.top_item_sales,
    fr.order_count,
    fr.total_profit,
    COALESCE(fr.profit_status, 'Status Unavailable') AS profit_status,
    (SELECT COUNT(*) FROM store s WHERE s.s_country = 'USA' AND s.s_open_date_sk <= cast('2002-10-01' as date)) AS open_stores,
    (SELECT MAX(d.d_year) FROM date_dim d WHERE d.d_current_year = 'Y') AS current_year
FROM 
    FinalReport fr
ORDER BY 
    fr.total_profit DESC NULLS LAST
LIMIT 100;