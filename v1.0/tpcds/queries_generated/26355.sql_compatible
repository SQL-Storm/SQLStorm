
WITH processed_customers AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_salutation, ' ', c.c_first_name, ' ', c.c_last_name) AS full_name,
        INITCAP(c.c_city) AS city_formatted,
        REPLACE(c.c_email_address, '@example.com', '@mydomain.com') AS updated_email,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
aggregated_data AS (
    SELECT 
        pc.city_formatted,
        COUNT(pc.c_customer_sk) AS customer_count,
        AVG(cd.cd_purchase_estimate) AS avg_purchase_estimate
    FROM 
        processed_customers pc
    JOIN 
        customer_demographics cd ON pc.c_customer_sk = cd.cd_demo_sk
    GROUP BY 
        pc.city_formatted
)
SELECT 
    ad.city_formatted,
    ad.customer_count,
    ad.avg_purchase_estimate,
    CASE 
        WHEN ad.avg_purchase_estimate > 500 THEN 'High Value'
        WHEN ad.avg_purchase_estimate BETWEEN 250 AND 500 THEN 'Medium Value'
        ELSE 'Low Value'
    END AS customer_value_category
FROM 
    aggregated_data ad
ORDER BY 
    ad.customer_count DESC
FETCH FIRST 10 ROWS ONLY;
