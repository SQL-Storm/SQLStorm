
WITH RankedSales AS (
    SELECT 
        ws.ws_item_sk,
        COUNT(DISTINCT ws.ws_bill_customer_sk) AS unique_customers,
        SUM(ws.ws_net_paid) AS total_sales,
        RANK() OVER (PARTITION BY ws.ws_item_sk ORDER BY SUM(ws.ws_net_paid) DESC) AS sales_rank
    FROM 
        web_sales ws
    WHERE 
        ws.ws_sold_date_sk IN (SELECT d_date_sk FROM date_dim WHERE d_year = 2022)
    GROUP BY 
        ws.ws_item_sk
),
RecentReturns AS (
    SELECT 
        r.cr_item_sk,
        SUM(r.cr_return_quantity) AS total_returns,
        SUM(r.cr_return_amt) AS total_returned_amt,
        FIRST_VALUE(r.cr_returned_date_sk) OVER (PARTITION BY r.cr_item_sk ORDER BY r.cr_returned_date_sk DESC) AS most_recent_return_date
    FROM 
        catalog_returns r
    WHERE 
        r.cr_returned_date_sk BETWEEN (SELECT MIN(d_date_sk) FROM date_dim WHERE d_year = 2021) AND (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2022)
    GROUP BY 
        r.cr_item_sk
),
HighValueItems AS (
    SELECT 
        i.i_item_sk,
        i.i_item_id,
        i.i_item_desc,
        COALESCE(r.total_returns, 0) AS total_returns,
        COALESCE(r.total_returned_amt, 0) AS total_returned_amt,
        COALESCE(s.unique_customers, 0) AS unique_customers,
        COALESCE(s.total_sales, 0) AS total_sales
    FROM 
        item i
    LEFT JOIN 
        RecentReturns r ON i.i_item_sk = r.cr_item_sk
    LEFT JOIN 
        RankedSales s ON i.i_item_sk = s.ws_item_sk
    WHERE 
        (s.total_sales > 1000 OR r.total_returned_amt < 100)
        AND (i.i_current_price IS NOT NULL OR i.i_wholesale_cost IS NOT NULL)
        AND (i.i_item_desc LIKE '%Special%' OR i.i_item_desc IS NULL)
),
SalesAnalysis AS (
    SELECT 
        hvi.i_item_sk,
        hvi.i_item_id,
        hvi.i_item_desc,
        hvi.total_returns,
        hvi.total_returned_amt,
        hvi.unique_customers,
        hvi.total_sales,
        DENSE_RANK() OVER (ORDER BY hvi.total_sales DESC) AS sales_value_rank,
        CASE 
            WHEN hvi.total_returns = 0 THEN 'No Returns'
            WHEN hvi.total_returns <= 5 THEN 'Few Returns'
            ELSE 'Many Returns'
        END AS return_category
    FROM 
        HighValueItems hvi
)
SELECT 
    sa.i_item_sk,
    sa.i_item_id,
    sa.i_item_desc,
    sa.total_returns,
    sa.total_returned_amt,
    sa.unique_customers,
    sa.total_sales,
    sa.sales_value_rank,
    sa.return_category,
    CASE 
        WHEN sa.return_category = 'No Returns' AND sa.total_sales > 5000 THEN 'Potential Star Item'
        WHEN sa.return_category = 'Few Returns' AND sa.total_sales BETWEEN 2000 AND 5000 THEN 'Consider for Promotion'
        ELSE 'Monitor Closely'
    END AS item_status
FROM 
    SalesAnalysis sa
WHERE 
    sa.sales_value_rank <= 10
ORDER BY 
    sa.total_sales DESC;
