
WITH RankedSales AS (
    SELECT 
        ws.web_site_sk,
        ws.ws_order_number,
        ws.ws_quantity,
        ws.ws_sales_price,
        RANK() OVER (PARTITION BY ws.web_site_sk ORDER BY ws.ws_sales_price DESC) AS sales_rank
    FROM 
        web_sales ws
    WHERE 
        ws.ws_sold_date_sk IN (SELECT d_date_sk FROM date_dim WHERE d_year = 2023)
),
CustomerStats AS (
    SELECT 
        c.c_customer_sk,
        cd.cd_gender,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_paid) AS total_spent
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        c.c_birth_year >= 1980 AND cd.cd_gender IS NOT NULL
    GROUP BY 
        c.c_customer_sk, cd.cd_gender
),
TopCustomers AS (
    SELECT 
        cs.c_customer_sk, 
        cs.cd_gender,
        cs.total_orders, 
        cs.total_quantity, 
        cs.total_spent,
        ROW_NUMBER() OVER (ORDER BY cs.total_spent DESC) AS rank
    FROM 
        CustomerStats cs
    WHERE 
        cs.total_spent > 1000
)
SELECT 
    cs.c_customer_sk,
    cs.cd_gender,
    cs.total_orders,
    cs.total_quantity,
    cs.total_spent,
    rs.ws_order_number,
    rs.ws_quantity,
    rs.ws_sales_price
FROM 
    TopCustomers cs
LEFT JOIN 
    RankedSales rs ON cs.c_customer_sk = rs.web_site_sk  -- corrected the join condition
WHERE 
    cs.rank <= 10
ORDER BY 
    cs.total_spent DESC, cs.c_customer_sk;
