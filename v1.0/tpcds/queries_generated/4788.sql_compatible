
WITH RankedSales AS (
    SELECT
        ws.ws_bill_customer_sk,
        SUM(ws.ws_sales_price) AS total_sales,
        RANK() OVER (PARTITION BY ws.ws_bill_customer_sk ORDER BY SUM(ws.ws_sales_price) DESC) AS sales_rank
    FROM
        web_sales ws
    WHERE
        ws.ws_sold_date_sk BETWEEN 2451253 AND 2451310 
    GROUP BY
        ws.ws_bill_customer_sk
),
TopCustomers AS (
    SELECT 
        ws_bill_customer_sk,
        total_sales
    FROM
        RankedSales
    WHERE 
        sales_rank <= 10
),
CustomerDetails AS (
    SELECT
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        CASE
            WHEN cd.cd_gender = 'M' THEN 'Male'
            WHEN cd.cd_gender = 'F' THEN 'Female'
            ELSE 'Other' 
        END AS gender,
        CASE
            WHEN cd.cd_marital_status = 'S' THEN 'Single'
            WHEN cd.cd_marital_status = 'M' THEN 'Married'
            ELSE 'Other'
        END AS marital_status,
        cd.cd_purchase_estimate,
        tc.total_sales
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        TopCustomers tc ON c.c_customer_sk = tc.ws_bill_customer_sk
)
SELECT 
    cd.c_customer_id,
    cd.c_first_name,
    cd.c_last_name,
    cd.gender,
    cd.marital_status,
    cd.cd_purchase_estimate,
    COALESCE(tc.total_sales, 0) AS total_sales,
    ROW_NUMBER() OVER (ORDER BY COALESCE(tc.total_sales, 0) DESC) AS customer_rank
FROM 
    CustomerDetails cd
ORDER BY 
    total_sales DESC;
