
WITH recent_sales AS (
    SELECT 
        ws_item_sk, 
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_ext_sales_price) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY ws_sold_date_sk DESC) AS rn
    FROM web_sales
    GROUP BY ws_item_sk
),
high_value_customers AS (
    SELECT 
        c_customer_sk,
        SUM(ws_net_paid) AS total_spent
    FROM customer
    JOIN web_sales ON customer.c_customer_sk = web_sales.ws_bill_customer_sk
    GROUP BY c_customer_sk
    HAVING SUM(ws_net_paid) > 1000
),
customer_ranking AS (
    SELECT 
        cd_demo_sk,
        CASE 
            WHEN cd_gender = 'M' THEN 'Male'
            WHEN cd_gender = 'F' THEN 'Female'
            ELSE 'Undefined'
        END AS gender,
        RANK() OVER (ORDER BY SUM(cd_purchase_estimate) DESC) AS rank
    FROM customer_demographics
    GROUP BY cd_demo_sk, cd_gender
)
SELECT 
    ca.ca_address_id,
    ca.ca_city,
    ca.ca_country,
    c.first_name,
    c.last_name,
    cd.gender,
    v.total_quantity,
    v.total_sales,
    COALESCE(hvc.total_spent, 0) AS customer_spending
FROM customer_address ca
LEFT JOIN customer c ON ca.ca_address_sk = c.c_current_addr_sk
LEFT JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
LEFT JOIN recent_sales v ON v.ws_item_sk = c.c_customer_sk
LEFT JOIN high_value_customers hvc ON hvc.c_customer_sk = c.c_customer_sk
WHERE (ca.ca_city IS NULL OR ca.ca_city LIKE '%York%')
  AND (v.total_quantity IS NULL OR v.total_quantity > 5)
  AND (v.total_sales IS NOT NULL OR hvc.total_spent IS NOT NULL)
ORDER BY cd.gender, customer_spending DESC, v.total_sales DESC
LIMIT 50;
