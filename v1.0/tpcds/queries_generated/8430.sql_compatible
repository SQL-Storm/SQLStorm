
WITH CustomerStats AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(CASE WHEN ws.web_site_sk IS NOT NULL THEN ws.ws_quantity ELSE 0 END) AS total_web_sales,
        SUM(CASE WHEN cs.cs_item_sk IS NOT NULL THEN cs.cs_quantity ELSE 0 END) AS total_catalog_sales,
        SUM(CASE WHEN ss.ss_item_sk IS NOT NULL THEN ss.ss_quantity ELSE 0 END) AS total_store_sales,
        COUNT(DISTINCT ws.ws_order_number) AS web_orders,
        COUNT(DISTINCT cs.cs_order_number) AS catalog_orders,
        COUNT(DISTINCT ss.ss_ticket_number) AS store_orders
    FROM customer c
    LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN catalog_sales cs ON c.c_customer_sk = cs.cs_bill_customer_sk
    LEFT JOIN store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY c.c_customer_sk, c.c_first_name, c.c_last_name
)
SELECT 
    cs.c_customer_sk,
    cs.c_first_name,
    cs.c_last_name,
    cs.total_web_sales,
    cs.total_catalog_sales,
    cs.total_store_sales,
    (cs.total_web_sales + cs.total_catalog_sales + cs.total_store_sales) AS total_sales,
    (CASE 
        WHEN cs.total_web_sales > cs.total_catalog_sales AND cs.total_web_sales > cs.total_store_sales THEN 'Web'
        WHEN cs.total_catalog_sales > cs.total_web_sales AND cs.total_catalog_sales > cs.total_store_sales THEN 'Catalog'
        WHEN cs.total_store_sales > cs.total_web_sales AND cs.total_store_sales > cs.total_catalog_sales THEN 'Store'
        ELSE 'Equal'
    END) AS most_preferred_channel
FROM CustomerStats cs
ORDER BY total_sales DESC
FETCH FIRST 100 ROWS ONLY;
