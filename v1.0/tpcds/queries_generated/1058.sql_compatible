
WITH customer_stats AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_income_band_sk,
        SUM(COALESCE(ss.ss_net_paid, 0)) AS total_spent,
        COUNT(DISTINCT ss.ss_ticket_number) AS transaction_count
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_income_band_sk
),
ranked_customers AS (
    SELECT 
        cs.c_customer_sk,
        cs.c_first_name,
        cs.c_last_name,
        cs.total_spent,
        RANK() OVER (PARTITION BY cs.cd_income_band_sk ORDER BY cs.total_spent DESC) AS rank_within_band
    FROM 
        customer_stats cs
),
top_customers AS (
    SELECT 
        rc.c_customer_sk,
        rc.c_first_name,
        rc.c_last_name,
        rc.total_spent,
        rc.rank_within_band
    FROM 
        ranked_customers rc
    WHERE 
        rc.rank_within_band <= 5
),
customer_addresses AS (
    SELECT 
        c.c_customer_sk,
        ca.ca_address_id,
        ca.ca_city,
        ca.ca_state
    FROM 
        customer c
    LEFT JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
)
SELECT 
    tc.c_customer_sk,
    tc.c_first_name,
    tc.c_last_name,
    tc.total_spent,
    ca.ca_address_id,
    ca.ca_city,
    ca.ca_state
FROM 
    top_customers tc
LEFT JOIN 
    customer_addresses ca ON tc.c_customer_sk = ca.c_customer_sk
WHERE 
    (ca.ca_city IS NOT NULL OR tc.total_spent > 1000)
ORDER BY 
    tc.total_spent DESC;
