
WITH CustomerStats AS (
    SELECT
        c.c_customer_sk,
        COUNT(sr.sr_ticket_number) AS total_returns,
        SUM(COALESCE(sr.sr_return_quantity, 0)) AS total_returned_quantity,
        SUM(COALESCE(sr.sr_return_amt, 0)) AS total_returned_amount
    FROM customer c
    LEFT JOIN store_returns sr ON c.c_customer_sk = sr.sr_customer_sk
    GROUP BY c.c_customer_sk
),
DailySales AS (
    SELECT
        d.d_date AS sales_date,
        SUM(ws.ws_quantity) AS total_quantity_sold,
        SUM(ws.ws_sales_price) AS total_sales
    FROM date_dim d
    JOIN web_sales ws ON d.d_date_sk = ws.ws_sold_date_sk
    WHERE d.d_year = 2001
    GROUP BY d.d_date
),
PromotionStats AS (
    SELECT
        p.p_promo_id,
        COUNT(ws.ws_order_number) AS total_orders,
        SUM(ws.ws_net_profit) AS total_profit
    FROM promotion p
    JOIN web_sales ws ON p.p_promo_sk = ws.ws_promo_sk
    WHERE p.p_start_date_sk < 2501
    GROUP BY p.p_promo_id
)
SELECT
    c.c_customer_id,
    c.c_first_name,
    c.c_last_name,
    cs.total_returns,
    cs.total_returned_quantity,
    cs.total_returned_amount,
    ds.sales_date,
    ds.total_quantity_sold,
    ds.total_sales,
    COALESCE(ps.total_orders, 0) AS total_orders,
    COALESCE(ps.total_profit, 0) AS total_profit
FROM customer c
LEFT JOIN CustomerStats cs ON c.c_customer_sk = cs.c_customer_sk
LEFT JOIN DailySales ds ON ds.total_quantity_sold > 100
LEFT JOIN PromotionStats ps ON ds.total_sales > (SELECT AVG(total_sales) FROM DailySales) 
                              AND ds.sales_date = (
                                  SELECT MAX(sales_date) FROM DailySales
                                  WHERE sales_date <= DATE '2002-10-01'
                              )
WHERE 
    (c.c_birth_month IS NOT NULL AND c.c_birth_day IS NOT NULL) 
    OR (c.c_preferred_cust_flag = 'Y' AND cs.total_returns > 0)
ORDER BY ds.sales_date DESC, total_sales DESC
FETCH FIRST 100 ROWS ONLY;
