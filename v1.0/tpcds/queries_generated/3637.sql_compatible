
WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        MAX(ws.ws_sales_price) AS max_item_price,
        MIN(ws.ws_sales_price) AS min_item_price,
        PERCENTILE_CONT(0.5) WITHIN GROUP (ORDER BY ws.ws_sales_price) AS median_item_price
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        c.c_birth_year >= 1980
    GROUP BY 
        c.c_customer_sk
), 
TopCustomers AS (
    SELECT 
        cs.c_customer_sk,
        cs.total_sales,
        RANK() OVER (ORDER BY cs.total_sales DESC) AS sales_rank
    FROM 
        CustomerSales cs
    WHERE 
        cs.total_sales > 10000
),
ShippingDetails AS (
    SELECT 
        ws.ws_ship_mode_sk,
        sm.sm_type,
        SUM(ws.ws_net_profit) AS total_net_profit,
        COUNT(ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
    LEFT JOIN 
        ship_mode sm ON ws.ws_ship_mode_sk = sm.sm_ship_mode_sk
    GROUP BY 
        ws.ws_ship_mode_sk, sm.sm_type
)
SELECT 
    tc.sales_rank,
    c.c_first_name,
    c.c_last_name,
    cs.total_sales,
    sd.total_net_profit,
    sd.total_orders,
    CASE 
        WHEN sd.total_net_profit IS NULL THEN 'No Data'
        ELSE 'Data Available'
    END AS profit_data_status
FROM 
    TopCustomers tc
JOIN 
    customer c ON tc.c_customer_sk = c.c_customer_sk
LEFT JOIN 
    ShippingDetails sd ON sd.ws_ship_mode_sk = (
        SELECT 
            ws.ws_ship_mode_sk 
        FROM 
            web_sales ws 
        WHERE 
            ws.ws_bill_customer_sk = c.c_customer_sk 
        ORDER BY 
            ws.ws_sold_date_sk DESC 
        FETCH FIRST 1 ROW ONLY
    )
WHERE 
    tc.sales_rank <= 10
ORDER BY 
    tc.sales_rank;
