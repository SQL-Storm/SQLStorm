
SELECT 
    ca_state,
    COUNT(DISTINCT c_customer_sk) AS unique_customers,
    SUM(ws_quantity) AS total_quantity,
    SUM(ws_net_paid) AS total_revenue,
    AVG(CASE WHEN cd_gender = 'M' THEN ws_net_paid END) AS avg_male_spending,
    AVG(CASE WHEN cd_gender = 'F' THEN ws_net_paid END) AS avg_female_spending,
    CONCAT(UPPER(ca_city), ', ', INITCAP(ca_state)) AS formatted_location
FROM 
    customer_address ca
JOIN 
    customer c ON ca.ca_address_sk = c.c_current_addr_sk
JOIN 
    web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
JOIN 
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
JOIN 
    date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
WHERE 
    dd.d_year = 2023
    AND (ws.net_paid - ws.ext_discount_amt) > 0
GROUP BY 
    ca_state, ca_city, c_customer_sk
ORDER BY 
    total_revenue DESC
FETCH FIRST 10 ROWS ONLY;
