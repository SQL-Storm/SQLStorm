
WITH enriched_customers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        LENGTH(c.c_first_name || ' ' || c.c_last_name) AS full_name_length,
        MD5(TRIM(UPPER(c.c_first_name) || TRIM(UPPER(c.c_last_name)))) AS name_hash,
        (CASE
            WHEN cd.cd_gender = 'M' THEN 'Mr.'
            WHEN cd.cd_gender = 'F' THEN 'Ms.'
            ELSE 'Mx.'
        END) AS salutation,
        TO_CHAR(DATE '2002-10-01' - (EXTRACT(YEAR FROM DATE '2002-10-01') - c.c_birth_year), 'YYYY-MM-DD') AS age_estimation
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
)
SELECT 
    ec.c_customer_sk,
    ec.salutation || ' ' || ec.c_first_name || ' ' || ec.c_last_name AS full_customer_name,
    ec.ca_city,
    ec.ca_state,
    ec.cd_gender,
    ec.cd_marital_status,
    ec.full_name_length,
    ec.name_hash,
    ec.age_estimation
FROM 
    enriched_customers ec
WHERE 
    (ec.cd_gender = 'M' AND ec.full_name_length > 15) 
    OR (ec.cd_gender = 'F' AND ec.full_name_length BETWEEN 10 AND 20)
ORDER BY 
    ec.ca_state, ec.full_name_length DESC;
