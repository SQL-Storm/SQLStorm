
WITH address_summary AS (
    SELECT 
        ca_city,
        ca_state,
        COUNT(DISTINCT ca_address_sk) AS unique_addresses,
        COUNT(DISTINCT c_customer_sk) AS customer_count
    FROM 
        customer_address 
    LEFT JOIN 
        customer ON ca_address_sk = c_current_addr_sk
    GROUP BY 
        ca_city, ca_state
),
promotion_summary AS (
    SELECT 
        p_start_date_sk,
        COUNT(DISTINCT p_promo_id) AS promo_count
    FROM 
        promotion
    WHERE 
        p_discount_active = 'Y' 
        AND p_start_date_sk > (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2022)
    GROUP BY 
        p_start_date_sk
),
sales_details AS (
    SELECT 
        ws_item_sk,
        SUM(ws_net_profit) AS total_net_profit,
        SUM(ws_quantity) AS total_quantity,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_net_profit) DESC) AS rnk
    FROM 
        web_sales
    WHERE 
        ws_net_profit IS NOT NULL
    GROUP BY 
        ws_item_sk
)
SELECT 
    a.ca_city,
    a.ca_state,
    a.unique_addresses,
    a.customer_count,
    COALESCE(p.promo_count, 0) AS active_promo_count,
    s.total_net_profit,
    s.total_quantity
FROM 
    address_summary a
LEFT JOIN 
    promotion_summary p ON p.p_start_date_sk = (SELECT MAX(p_start_date_sk) FROM promotion_summary)
LEFT JOIN 
    sales_details s ON s.rnk = 1
WHERE 
    a.customer_count > 0 
    AND (a.ca_city IS NULL OR a.ca_state IS NOT NULL)
ORDER BY 
    s.total_net_profit DESC
LIMIT 100
UNION ALL
SELECT 
    'ALL' AS ca_city,
    'ALL' AS ca_state,
    COUNT(DISTINCT a.ca_address_sk) AS unique_addresses,
    COUNT(DISTINCT c.c_customer_sk) AS customer_count,
    (SELECT COUNT(*) FROM promotion WHERE p_discount_active = 'Y') AS active_promo_count,
    SUM(ws.ws_net_profit) AS total_net_profit,
    SUM(ws.ws_quantity) AS total_quantity
FROM 
    customer_address a
LEFT JOIN 
    customer c ON a.ca_address_sk = c.c_current_addr_sk
LEFT JOIN 
    web_sales ws ON ws.ws_bill_customer_sk = c.c_customer_sk
WHERE 
    c.c_customer_sk IS NOT NULL
GROUP BY 
    'ALL'
ORDER BY 
    total_net_profit DESC;
