
WITH CustomerInfo AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
SalesData AS (
    SELECT 
        ws.ws_bill_customer_sk,
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_bill_customer_sk
),
CombinedData AS (
    SELECT 
        ci.full_name,
        ca.ca_city AS c_city,
        ca.ca_state AS c_state,
        ca.ca_country AS c_country,
        sd.total_sales,
        sd.total_orders
    FROM 
        CustomerInfo ci
    LEFT JOIN 
        SalesData sd ON ci.c_customer_id = sd.ws_bill_customer_sk
),
FinalOutput AS (
    SELECT 
        full_name,
        c_city,
        c_state,
        c_country,
        total_sales,
        total_orders,
        CASE 
            WHEN total_sales IS NULL THEN 'No Sales'
            WHEN total_sales = 0 THEN 'No Sales'
            ELSE 'Has Sales'
        END AS sales_status
    FROM 
        CombinedData
)
SELECT 
    full_name,
    c_city,
    c_state,
    c_country,
    total_sales,
    total_orders,
    sales_status,
    INITCAP(c_city) AS city_capitalized
FROM 
    FinalOutput
WHERE 
    sales_status = 'Has Sales'
ORDER BY 
    total_sales DESC
FETCH FIRST 100 ROWS ONLY;
