
WITH RECURSIVE CustomerHierarchy AS (
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, c.c_birth_year, c.c_current_addr_sk,
           cd.cd_demo_sk, 'Root' AS relationship
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE cd.cd_marital_status = 'M' AND cd.cd_gender = 'F'
    
    UNION ALL
    
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, c.c_birth_year, c.c_current_addr_sk,
           c.c_current_cdemo_sk, CONCAT(ch.relationship, ' - Child') AS relationship
    FROM customer c
    JOIN CustomerHierarchy ch ON ch.cd_demo_sk = c.c_current_cdemo_sk
),
SalesData AS (
    SELECT 
        ss.ss_item_sk,
        ss.ss_sold_date_sk,
        ss.ss_quantity,
        SUM(ss.ss_net_profit) OVER (PARTITION BY ss.ss_item_sk ORDER BY ss.ss_sold_date_sk ROWS BETWEEN UNBOUNDED PRECEDING AND CURRENT ROW) AS cumulative_profit
    FROM store_sales ss
    WHERE ss.ss_sold_date_sk BETWEEN 20220101 AND 20221231
),
ReturnData AS (
    SELECT 
        sr_item_sk,
        COUNT(DISTINCT sr_ticket_number) AS return_count,
        SUM(sr_return_amt) AS total_return_amt
    FROM store_returns
    GROUP BY sr_item_sk
)
SELECT 
    ch.c_customer_sk, 
    ch.c_first_name, 
    ch.c_last_name,
    EXTRACT(YEAR FROM DATE '2002-10-01') - ch.c_birth_year AS age,
    SUM(sd.cumulative_profit) AS total_cumulative_profit,
    COALESCE(rd.return_count, 0) AS total_returns,
    COALESCE(rd.total_return_amt, 0) AS total_returned_amount
FROM CustomerHierarchy ch
LEFT JOIN SalesData sd ON ch.c_customer_sk = sd.ss_item_sk
LEFT JOIN ReturnData rd ON sd.ss_item_sk = rd.sr_item_sk
GROUP BY ch.c_customer_sk, ch.c_first_name, ch.c_last_name, ch.c_birth_year, rd.return_count, rd.total_return_amt
HAVING SUM(sd.cumulative_profit) > 1000 AND (EXTRACT(YEAR FROM DATE '2002-10-01') - ch.c_birth_year) > 30
ORDER BY total_cumulative_profit DESC
LIMIT 10;
