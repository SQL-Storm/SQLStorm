
WITH AddressDetails AS (
    SELECT 
        ca.ca_address_sk,
        CONCAT(ca.ca_street_number, ' ', ca.ca_street_name, ' ', ca.ca_street_type) AS FullAddress,
        LOWER(ca.ca_city) AS LowerCity,
        UPPER(ca.ca_state) AS UpperState,
        ca.ca_zip AS ZipCode
    FROM 
        customer_address ca
),
CustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_salutation, ' ', c.c_first_name, ' ', c.c_last_name) AS FullName,
        cd.cd_gender AS Gender,
        cd.cd_marital_status AS MaritalStatus,
        ad.FullAddress,
        ad.LowerCity,
        ad.UpperState,
        ad.ZipCode
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        AddressDetails ad ON c.c_current_addr_sk = ad.ca_address_sk
),
DateDetails AS (
    SELECT 
        d.d_date_sk,
        TO_CHAR(d.d_date, 'YYYY-MM-DD') AS FormattedDate, 
        d.d_month_seq AS MonthSequence,
        d.d_year AS Year
    FROM 
        date_dim d
),
SalesAmount AS (
    SELECT 
        ws.ws_bill_customer_sk AS CustomerSK,
        SUM(ws.ws_sales_price) AS TotalSales
    FROM 
        web_sales ws
    WHERE 
        ws.ws_sold_date_sk IN (SELECT d_date_sk FROM DateDetails WHERE Year = 2023)
    GROUP BY 
        ws.ws_bill_customer_sk
)
SELECT 
    ci.FullName,
    ci.Gender,
    ci.MaritalStatus,
    ci.FullAddress,
    ci.LowerCity,
    ci.UpperState,
    ci.ZipCode,
    sa.TotalSales,
    dd.FormattedDate
FROM 
    CustomerInfo ci
LEFT JOIN 
    SalesAmount sa ON ci.c_customer_sk = sa.CustomerSK
JOIN 
    DateDetails dd ON dd.d_date_sk = (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2023)
WHERE 
    ci.LowerCity LIKE '%new york%'
ORDER BY 
    sa.TotalSales DESC;
