
WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
SalesAnalysis AS (
    SELECT 
        cs.full_name,
        cs.total_sales,
        CASE 
            WHEN cs.total_sales = 0 THEN 'No Sales'
            WHEN cs.total_sales < 1000 THEN 'Low Sales'
            WHEN cs.total_sales BETWEEN 1000 AND 5000 THEN 'Medium Sales'
            ELSE 'High Sales'
        END AS sales_category
    FROM 
        CustomerSales cs
)
SELECT 
    sa.full_name,
    sa.total_sales,
    sa.sales_category,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.cd_education_status
FROM 
    SalesAnalysis sa
JOIN 
    customer_demographics cd ON sa.full_name LIKE CONCAT('%', SUBSTRING_INDEX(sa.full_name, ' ', 1), '%')
ORDER BY 
    sa.total_sales DESC
LIMIT 10;
