
WITH CustomerReturns AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        COUNT(DISTINCT wr.wr_return_number) AS web_return_count,
        COUNT(DISTINCT sr.sr_ticket_number) AS store_return_count,
        SUM(COALESCE(wr.wr_return_amt, 0)) AS total_web_return_amt,
        SUM(COALESCE(sr.sr_return_amt, 0)) AS total_store_return_amt
    FROM customer c
    LEFT JOIN web_returns wr ON c.c_customer_sk = wr.wr_returning_customer_sk
    LEFT JOIN store_returns sr ON c.c_customer_sk = sr.sr_customer_sk
    GROUP BY 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name
),
CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating,
        cd.cd_dep_count
    FROM customer_demographics cd
    WHERE cd.cd_purchase_estimate > 5000
),
SalesSummary AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_net_profit) AS total_web_sales_profit,
        COUNT(ws_order_number) AS total_web_orders
    FROM web_sales
    GROUP BY ws_bill_customer_sk
),
AggregateData AS (
    SELECT
        cr.c_customer_sk,
        cr.c_first_name,
        cr.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        COALESCE(ss.total_web_sales_profit, 0) AS total_web_sales_profit,
        COALESCE(ss.total_web_orders, 0) AS total_web_orders,
        cr.web_return_count,
        cr.store_return_count,
        COALESCE(cr.total_web_return_amt, 0) + COALESCE(cr.total_store_return_amt, 0) AS total_return_amount,
        CASE 
            WHEN cr.web_return_count > 5 THEN 'High Return'
            WHEN cr.store_return_count > 5 THEN 'High Return'
            ELSE 'Normal Return'
        END AS return_category
    FROM CustomerReturns cr
    LEFT JOIN CustomerDemographics cd ON cr.c_customer_sk = cd.cd_demo_sk
    LEFT JOIN SalesSummary ss ON cr.c_customer_sk = ss.ws_bill_customer_sk
)
SELECT 
    ad.c_customer_sk,
    ad.c_first_name,
    ad.c_last_name,
    ad.cd_gender,
    ad.cd_marital_status,
    ad.cd_purchase_estimate,
    ad.total_web_sales_profit,
    ad.total_web_orders,
    ad.web_return_count,
    ad.store_return_count,
    ad.total_return_amount,
    ad.return_category
FROM AggregateData ad
WHERE ad.cd_gender = 'F' 
  AND ad.cd_marital_status IN ('M', 'S')
  AND ad.total_return_amount > 1000
ORDER BY ad.total_web_sales_profit DESC
LIMIT 100;
