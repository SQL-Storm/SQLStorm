
WITH CustomerPurchases AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_paid_inc_tax) AS total_spent,
        COUNT(ws.ws_order_number) AS order_count,
        MAX(d.d_date) AS last_purchase_date
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2022
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name
), 
HighSpenders AS (
    SELECT 
        c.*,
        cp.total_spent,
        cp.order_count,
        cp.last_purchase_date
    FROM 
        CustomerPurchases cp
    JOIN 
        customer_demographics c ON c.cd_demo_sk = (
            SELECT c_current_cdemo_sk FROM customer WHERE c_customer_id = cp.c_customer_id
        )
    WHERE 
        cp.total_spent > (
            SELECT AVG(total_spent) FROM CustomerPurchases
        )
)
SELECT 
    CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
    cd.cd_gender,
    cd.cd_marital_status,
    cp.total_spent,
    cp.order_count,
    cp.last_purchase_date
FROM 
    HighSpenders cp
JOIN 
    customer_demographics cd ON cd.cd_demo_sk = (
        SELECT c_current_cdemo_sk FROM customer WHERE c_customer_id = cp.c_customer_id
    )
ORDER BY 
    cp.total_spent DESC
FETCH FIRST 10 ROWS ONLY;
