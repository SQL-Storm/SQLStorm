
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders,
        MAX(ws.ws_sold_date_sk) AS last_purchase_date
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        c.c_country = 'USA'
    GROUP BY 
        c.c_customer_id
),
TopCustomers AS (
    SELECT 
        cs.c_customer_id,
        cs.total_sales,
        cs.total_orders,
        cs.last_purchase_date,
        RANK() OVER (ORDER BY cs.total_sales DESC) AS sales_rank 
    FROM 
        CustomerSales cs
)

SELECT 
    cu.c_first_name,
    cu.c_last_name,
    cu.c_email_address,
    tc.total_sales,
    tc.total_orders,
    tc.last_purchase_date
FROM 
    TopCustomers tc
JOIN 
    customer cu ON tc.c_customer_id = cu.c_customer_id
WHERE 
    tc.sales_rank <= 10
ORDER BY 
    tc.total_sales DESC;
