
WITH RECURSIVE CustomerHierarchy AS (
    SELECT 
        c_customer_sk, 
        c_first_name, 
        c_last_name, 
        c_preferred_cust_flag, 
        NULL AS parent_customer_sk
    FROM 
        customer 
    WHERE 
        c_preferred_cust_flag = 'Y'
    
    UNION ALL
    
    SELECT 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        c.c_preferred_cust_flag,
        ch.c_customer_sk 
    FROM 
        customer c
    JOIN 
        CustomerHierarchy ch ON c.c_current_cdemo_sk = ch.c_customer_sk
    WHERE 
        c_preferred_cust_flag = 'N'
),
SalesData AS (
    SELECT 
        ws.ws_customer_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_paid_inc_tax) AS total_net_paid
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023 
        AND dd.d_week_seq BETWEEN 10 AND 15
    GROUP BY 
        ws.ws_customer_sk
),
Demographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        COALESCE(hd.hd_income_band_sk, -1) AS hd_income_band_sk
    FROM 
        customer_demographics cd
    LEFT JOIN 
        household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
)
SELECT 
    ch.c_customer_sk,
    ch.c_first_name,
    ch.c_last_name,
    COALESCE(sd.total_quantity, 0) AS total_quantity,
    COALESCE(sd.total_net_paid, 0) AS total_net_paid,
    d.cd_gender,
    d.cd_marital_status,
    d.hd_income_band_sk,
    ROW_NUMBER() OVER (PARTITION BY d.cd_gender ORDER BY COALESCE(sd.total_net_paid, 0) DESC) AS gender_rank
FROM 
    CustomerHierarchy ch
LEFT JOIN 
    SalesData sd ON ch.c_customer_sk = sd.ws_customer_sk
JOIN 
    Demographics d ON ch.c_customer_sk = d.cd_demo_sk
WHERE 
    (ch.parent_customer_sk IS NULL OR ch.c_preferred_cust_flag = 'Y') 
    AND d.cd_marital_status IS NOT NULL
ORDER BY 
    total_net_paid DESC, 
    ch.c_last_name ASC
LIMIT 100;
