
WITH TotalSales AS (
    SELECT 
        ws.sold_date_sk,
        SUM(ws.ext_sales_price) AS total_sales,
        SUM(ws.net_profit) AS total_profit,
        COUNT(DISTINCT ws.order_number) AS order_count
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2022
    GROUP BY 
        ws.sold_date_sk
),
CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.gender,
        COUNT(DISTINCT c.c_customer_sk) AS customer_count,
        SUM(ts.total_sales) AS total_sales,
        SUM(ts.total_profit) AS total_profit
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        TotalSales ts ON c.first_sales_date_sk = ts.sold_date_sk
    GROUP BY 
        cd.cd_demo_sk, cd.gender
),
SalesByState AS (
    SELECT 
        ca.ca_state,
        SUM(ts.total_sales) AS total_sales_state,
        SUM(ts.total_profit) AS total_profit_state
    FROM 
        TotalSales ts
    JOIN 
        customer c ON ts.sold_date_sk = c.first_sales_date_sk
    JOIN 
        customer_address ca ON c.current_addr_sk = ca.ca_address_sk
    GROUP BY 
        ca.ca_state
)
SELECT 
    cd.gender,
    SUM(cb.customer_count) AS total_customers,
    SUM(sb.total_sales_state) AS state_sales,
    SUM(sb.total_profit_state) AS state_profit
FROM 
    CustomerDemographics cd
JOIN 
    SalesByState sb ON cd.total_sales = sb.total_sales_state
JOIN 
    (SELECT cd_demo_sk FROM CustomerDemographics) cb ON cd.cd_demo_sk = cb.cd_demo_sk
GROUP BY 
    cd.gender
ORDER BY 
    cd.gender DESC;
