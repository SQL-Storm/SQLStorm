
WITH CustomerSales AS (
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, SUM(ws.ws_net_paid) AS total_spent
    FROM customer c
    JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY c.c_customer_sk, c.c_first_name, c.c_last_name
),
TopCustomers AS (
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, cs.total_spent,
           RANK() OVER (ORDER BY cs.total_spent DESC) AS sales_rank
    FROM CustomerSales cs
    JOIN customer c ON cs.c_customer_sk = c.c_customer_sk
),
SalesByMonth AS (
    SELECT d.d_year, d.d_month_seq, SUM(ws.ws_net_paid) AS monthly_sales
    FROM web_sales ws
    JOIN date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY d.d_year, d.d_month_seq
),
AverageMonthlySales AS (
    SELECT d.d_year, AVG(monthly_sales) AS avg_monthly_sales
    FROM SalesByMonth
    GROUP BY d.d_year
)
SELECT tc.c_first_name, tc.c_last_name, tc.total_spent, 
       ams.avg_monthly_sales,
       tc.sales_rank
FROM TopCustomers tc
JOIN AverageMonthlySales ams ON ams.d_year = EXTRACT(YEAR FROM DATE '2002-10-01')
WHERE tc.sales_rank <= 10
ORDER BY tc.total_spent DESC;
