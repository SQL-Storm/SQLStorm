
WITH SalesData AS (
    SELECT 
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_ext_sales_price) AS total_sales,
        t_year,
        d_month_seq,
        cd_gender,
        cd_marital_status,
        ca.city AS customer_city
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        warehouse w ON ws.ws_warehouse_sk = w.w_warehouse_sk
    JOIN 
        store s ON ws.ws_ship_addr_sk = s.s_store_sk
    JOIN 
        call_center cc ON s.s_company_id = cc.cc_company
    GROUP BY 
        ws_item_sk, t_year, d_month_seq, cd_gender, cd_marital_status, ca.city
)

SELECT 
    sd.ws_item_sk,
    sd.total_quantity,
    sd.total_sales,
    sd.t_year,
    sd.d_month_seq,
    sd.cd_gender,
    sd.cd_marital_status,
    sd.customer_city
FROM 
    SalesData sd
WHERE 
    sd.t_year = 2023 
    AND sd.total_sales > (
        SELECT AVG(total_sales) FROM SalesData
    )
ORDER BY 
    sd.total_sales DESC
FETCH FIRST 100 ROWS ONLY;
