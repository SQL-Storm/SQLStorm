
WITH AddressParts AS (
    SELECT 
        ca_address_sk,
        TRIM(ca_street_number) || ' ' || TRIM(ca_street_name) || ' ' || TRIM(ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip,
        ca_country
    FROM 
        customer_address
),
CustomerDetails AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(UPPER(SUBSTRING(c.c_first_name, 1, 1)), LOWER(SUBSTRING(c.c_first_name, 2))) AS formatted_first_name,
        CONCAT(UPPER(SUBSTRING(c.c_last_name, 1, 1)), LOWER(SUBSTRING(c.c_last_name, 2))) AS formatted_last_name,
        d.d_date AS last_purchase_date,
        a.full_address,
        a.ca_city,
        a.ca_state,
        a.ca_zip,
        a.ca_country
    FROM 
        customer c
    JOIN 
        customer_address a ON c.c_current_addr_sk = a.ca_address_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    LEFT JOIN 
        date_dim d ON ss.ss_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_date >= '2022-01-01'
),
BenchmarkResult AS (
    SELECT 
        COUNT(DISTINCT c_customer_sk) AS total_customers,
        AVG(LENGTH(formatted_first_name) + LENGTH(formatted_last_name)) AS avg_name_length,
        COUNT(DISTINCT full_address) AS unique_addresses,
        COUNT(*) AS total_purchases
    FROM 
        CustomerDetails
    GROUP BY 
        COUNT(DISTINCT c_customer_sk), 
        AVG(LENGTH(formatted_first_name) + LENGTH(formatted_last_name)), 
        COUNT(DISTINCT full_address), 
        COUNT(*)
)

SELECT 
    b.total_customers,
    b.avg_name_length,
    b.unique_addresses,
    b.total_purchases,
    (SELECT COUNT(*) FROM customer_demographics) AS total_demographics
FROM 
    BenchmarkResult b;
