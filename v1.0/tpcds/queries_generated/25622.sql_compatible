
WITH AddressDetails AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type, 
               CASE WHEN ca_suite_number IS NOT NULL THEN CONCAT(' Suite ', ca_suite_number) ELSE '' END) AS full_address,
        ca_city,
        ca_state,
        ca_zip
    FROM customer_address
),
CustomerDetails AS (
    SELECT 
        c_customer_sk,
        CONCAT(c_salutation, ' ', c_first_name, ' ', c_last_name) AS full_name,
        cd_gender,
        cd_marital_status,
        cd_education_status,
        cd_purchase_estimate,
        ca.ca_address_sk,
        ad.full_address
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN AddressDetails ad ON c.c_current_addr_sk = ad.ca_address_sk
),
SalesDetails AS (
    SELECT 
        ws_ship_date_sk,
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_net_paid) AS total_net_paid
    FROM web_sales
    GROUP BY ws_ship_date_sk, ws_item_sk
),
FinalReport AS (
    SELECT 
        cd.full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        SUM(sd.total_quantity) AS total_items_purchased,
        SUM(sd.total_net_paid) AS total_spent,
        ad.full_address,
        ad.ca_city,
        ad.ca_state
    FROM CustomerDetails cd
    LEFT JOIN SalesDetails sd ON cd.c_customer_sk = sd.ws_bill_customer_sk
    LEFT JOIN AddressDetails ad ON cd.ca_address_sk = ad.ca_address_sk
    GROUP BY 
        cd.full_name, 
        cd.cd_gender, 
        cd.cd_marital_status, 
        ad.full_address, 
        ad.ca_city, 
        ad.ca_state
)
SELECT 
    full_name,
    cd_gender,
    cd_marital_status,
    total_items_purchased,
    total_spent,
    full_address,
    CONCAT(ca_city, ', ', ca_state, ' ', ad.ca_zip) AS formatted_location
FROM FinalReport ad
WHERE total_spent > 1000 AND cd_gender = 'M'
ORDER BY total_spent DESC
LIMIT 50;
