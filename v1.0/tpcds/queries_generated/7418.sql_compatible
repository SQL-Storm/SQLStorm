
WITH CustomerStats AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating,
        COUNT(sr.ticket_number) AS total_returns,
        SUM(sr.return_quantity) AS total_returned_quantity,
        SUM(sr.return_amt_inc_tax) AS total_returned_amt,
        SUM(sr.return_tax) AS total_returned_tax
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        store_returns sr ON c.c_customer_sk = sr.sr_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status, cd.cd_purchase_estimate, cd.cd_credit_rating
),
SalesData AS (
    SELECT 
        ws.ship_customer_sk,
        SUM(ws.ws_net_paid) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
    GROUP BY 
        ws.ship_customer_sk
),
FinalStats AS (
    SELECT 
        cs.c_customer_sk,
        cs.c_first_name,
        cs.c_last_name,
        cs.cd_gender,
        cs.cd_marital_status,
        cs.cd_purchase_estimate,
        cs.cd_credit_rating,
        sd.total_sales,
        sd.total_orders,
        cs.total_returns,
        cs.total_returned_quantity,
        cs.total_returned_amt,
        cs.total_returned_tax
    FROM 
        CustomerStats cs
    LEFT JOIN 
        SalesData sd ON cs.c_customer_sk = sd.ship_customer_sk
)
SELECT 
    c.c_customer_sk,
    c.c_first_name,
    c.c_last_name,
    c.cd_gender,
    c.cd_marital_status,
    COALESCE(SUM(c.total_returns), 0) AS total_returns,
    COALESCE(SUM(c.total_returned_quantity), 0) AS total_returned_quantity,
    COALESCE(SUM(c.total_returned_amt), 0) AS total_returned_amt,
    COALESCE(SUM(c.total_returned_tax), 0) AS total_returned_tax,
    COALESCE(SUM(s.total_sales), 0) AS total_sales,
    COALESCE(COUNT(s.total_orders), 0) AS total_orders
FROM 
    FinalStats c
LEFT JOIN 
    SalesData s ON c.c_customer_sk = s.ship_customer_sk
GROUP BY 
    c.c_customer_sk, c.c_first_name, c.c_last_name, c.cd_gender, c.cd_marital_status
ORDER BY 
    total_sales DESC, total_returns DESC
LIMIT 100;
