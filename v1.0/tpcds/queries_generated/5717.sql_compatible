
WITH RankedSales AS (
    SELECT 
        ws.web_site_id,
        ws.ws_sold_date_sk,
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_sales_price) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY ws.web_site_id ORDER BY SUM(ws.ws_sales_price) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023
    GROUP BY 
        ws.web_site_id, ws.ws_sold_date_sk, ws.ws_item_sk
),
TopWebSites AS (
    SELECT 
        web_site_id, 
        SUM(total_quantity) AS site_total_quantity,
        SUM(total_sales) AS site_total_sales
    FROM 
        RankedSales
    WHERE 
        sales_rank <= 10
    GROUP BY 
        web_site_id
),
CustomerStats AS (
    SELECT 
        c.c_customer_id,
        COUNT(DISTINCT cs.ss_ticket_number) AS total_store_purchases,
        COUNT(DISTINCT ws.ws_order_number) AS total_web_purchases
    FROM 
        customer c
    LEFT JOIN 
        store_sales cs ON c.c_customer_sk = cs.ss_customer_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id
),
FinalReport AS (
    SELECT 
        c.c_customer_id,
        cs.total_store_purchases,
        cs.total_web_purchases,
        tw.site_total_quantity,
        tw.site_total_sales
    FROM 
        CustomerStats cs
    JOIN 
        TopWebSites tw ON cs.total_web_purchases > 0
    JOIN 
        customer c ON c.c_customer_id = cs.c_customer_id
)
SELECT 
    c_customer_id AS customer_id,
    total_store_purchases,
    total_web_purchases,
    site_total_quantity,
    site_total_sales
FROM 
    FinalReport
ORDER BY 
    total_web_purchases DESC,
    site_total_sales DESC;
