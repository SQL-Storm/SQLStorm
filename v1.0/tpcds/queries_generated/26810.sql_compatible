
WITH CustomerAddress AS (
    SELECT 
        ca.ca_city,
        ca.ca_state,
        COUNT(DISTINCT c.c_customer_id) AS customer_count,
        STRING_AGG(CONCAT(c.c_first_name, ' ', c.c_last_name), ', ') AS customer_names
    FROM 
        customer_address ca
    JOIN 
        customer c ON ca.ca_address_sk = c.c_current_addr_sk
    GROUP BY 
        ca.ca_city, ca.ca_state
),
SalesData AS (
    SELECT 
        w.w_warehouse_name,
        SUM(s.ss_ext_sales_price) AS total_sales,
        SUM(s.ss_quantity) AS total_quantity
    FROM 
        store_sales s
    JOIN 
        warehouse w ON s.ss_store_sk = w.w_warehouse_sk
    GROUP BY 
        w.w_warehouse_name
),
MergedData AS (
    SELECT 
        ca.ca_city,
        ca.ca_state,
        cs.customer_count,
        sd.w_warehouse_name,
        sd.total_sales,
        sd.total_quantity
    FROM 
        CustomerAddress ca
    LEFT JOIN 
        SalesData sd ON ca.ca_city = sd.w_warehouse_name
    LEFT JOIN 
        (
            SELECT 
                ca.ca_city, 
                ca.ca_state, 
                SUM(sd.total_sales) AS total_sales_by_city
            FROM 
                SalesData sd
            JOIN 
                CustomerAddress ca ON ca.ca_city = sd.w_warehouse_name
            GROUP BY 
                ca.ca_city, ca.ca_state
        ) AS cs ON ca.ca_city = cs.ca_city AND ca.ca_state = cs.ca_state
)
SELECT 
    ca.ca_city AS city,
    ca.ca_state AS state,
    md.customer_count,
    md.w_warehouse_name AS warehouse_name,
    md.total_sales,
    md.total_quantity,
    md.total_sales * 100.0 / NULLIF(md.total_quantity, 0) AS avg_sales_price
FROM 
    MergedData md
ORDER BY 
    md.total_sales DESC
LIMIT 10;
