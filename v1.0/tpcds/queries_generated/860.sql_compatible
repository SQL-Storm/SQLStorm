
WITH ranked_sales AS (
    SELECT 
        ws_item_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        DENSE_RANK() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        web_sales
    GROUP BY 
        ws_item_sk
),
top_items AS (
    SELECT 
        i.i_item_id,
        i.i_item_desc,
        r.total_sales,
        r.ws_item_sk
    FROM 
        item i
    JOIN 
        ranked_sales r ON i.i_item_sk = r.ws_item_sk
    WHERE 
        r.sales_rank <= 10
),
customer_counts AS (
    SELECT 
        c.c_customer_sk,
        COUNT(DISTINCT ws_order_number) AS order_count
    FROM 
        web_sales w
    JOIN 
        customer c ON w.ws_bill_customer_sk = c.c_customer_sk
    GROUP BY 
        c.c_customer_sk
),
high_value_customers AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        cc.order_count
    FROM 
        customer_counts cc
    JOIN 
        customer c ON cc.c_customer_sk = c.c_customer_sk
    WHERE 
        cc.order_count > (
            SELECT 
                AVG(order_count) 
            FROM 
                customer_counts
        )
)
SELECT 
    ti.i_item_id,
    ti.i_item_desc,
    hvc.c_customer_id,
    hvc.c_first_name,
    hvc.c_last_name,
    SUM(ws.ws_ext_sales_price) AS total_sales_by_customer,
    COUNT(DISTINCT ws.ws_order_number) AS orders_count
FROM 
    web_sales ws
JOIN 
    top_items ti ON ws.ws_item_sk = ti.ws_item_sk
JOIN 
    high_value_customers hvc ON ws.ws_bill_customer_sk = hvc.c_customer_id
GROUP BY 
    ti.i_item_id, ti.i_item_desc, hvc.c_customer_id, hvc.c_first_name, hvc.c_last_name
HAVING 
    SUM(ws.ws_ext_sales_price) > 1000
ORDER BY 
    total_sales_by_customer DESC, hvc.c_last_name;
