
WITH SalesData AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_profit) AS total_net_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        MIN(d.d_date) AS first_sale_date,
        MAX(d.d_date) AS last_sale_date
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2023
    GROUP BY 
        ws.ws_item_sk
), 
TopItems AS (
    SELECT 
        i.i_item_id,
        sd.total_quantity,
        sd.total_net_profit,
        sd.total_orders,
        sd.first_sale_date,
        sd.last_sale_date
    FROM 
        SalesData sd
    JOIN 
        item i ON sd.ws_item_sk = i.i_item_sk
    ORDER BY 
        sd.total_net_profit DESC
    LIMIT 10
)

SELECT 
    ti.i_item_id,
    ti.total_quantity,
    ti.total_net_profit,
    ti.total_orders,
    ti.first_sale_date,
    ti.last_sale_date,
    (SELECT COUNT(DISTINCT ws.ws_bill_customer_sk) 
     FROM web_sales ws 
     WHERE ws.ws_item_sk = ti.ws_item_sk) AS unique_customers
FROM 
    TopItems ti
JOIN 
    customer c ON c.c_customer_sk IN (
        SELECT ws.ws_bill_customer_sk 
        FROM web_sales ws 
        WHERE ws.ws_item_sk = ti.ws_item_sk
    )
WHERE 
    c.c_current_cdemo_sk IS NOT NULL
ORDER BY 
    ti.total_net_profit DESC;
