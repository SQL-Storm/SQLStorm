
WITH CustomerSales AS (
    SELECT c.c_customer_sk, 
           c.c_first_name, 
           c.c_last_name, 
           SUM(ws.ws_ext_sales_price) AS total_sales,
           COUNT(ws.ws_order_number) AS order_count,
           AVG(ws.ws_list_price) AS avg_item_price
    FROM customer c
    JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY c.c_customer_sk, c.c_first_name, c.c_last_name
), 
HighValueCustomers AS (
    SELECT c.c_customer_sk, 
           c.c_first_name, 
           c.c_last_name, 
           cs.total_sales, 
           cs.order_count, 
           cs.avg_item_price,
           ROW_NUMBER() OVER (ORDER BY cs.total_sales DESC) AS rank
    FROM customer c
    JOIN CustomerSales cs ON c.c_customer_sk = cs.c_customer_sk
    WHERE cs.total_sales > (SELECT AVG(total_sales) FROM CustomerSales)
), 
CustomerDemo AS (
    SELECT cd.cd_demo_sk, 
           cd.cd_gender, 
           cd.cd_marital_status, 
           SUM(cs.total_sales) AS total_sales_by_demo
    FROM customer_demographics cd
    JOIN CustomerSales cs ON cs.c_customer_sk = cd.cd_demo_sk
    GROUP BY cd.cd_demo_sk, cd.cd_gender, cd.cd_marital_status
), 
SalesByDemographic AS (
    SELECT cd.cd_gender, 
           cd.cd_marital_status, 
           SUM(cd.total_sales_by_demo) AS demographic_sales
    FROM CustomerDemo cd
    GROUP BY cd.cd_gender, cd.cd_marital_status
)
SELECT sbd.cd_gender, 
       sbd.cd_marital_status, 
       sbd.demographic_sales, 
       COUNT(DISTINCT hvc.c_customer_sk) AS num_high_value_customers
FROM SalesByDemographic sbd
JOIN HighValueCustomers hvc ON sbd.cd_gender = hvc.c_gender
GROUP BY sbd.cd_gender, sbd.cd_marital_status
ORDER BY sbd.demographic_sales DESC;
