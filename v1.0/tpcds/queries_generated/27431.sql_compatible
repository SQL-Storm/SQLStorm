
WITH AddressDetails AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state
    FROM 
        customer_address
),
CustomerDetails AS (
    SELECT 
        c_customer_sk,
        c_first_name,
        c_last_name,
        cd_gender,
        cd_marital_status,
        CONCAT(c_first_name, ' ', c_last_name) AS full_name,
        (SELECT 
            COUNT(*) FROM customer_demographics
         WHERE 
            cd_demo_sk = c_current_cdemo_sk) AS demo_count
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
SalesSummary AS (
    SELECT 
        ss_store_sk,
        SUM(ss_quantity) AS total_items_sold,
        SUM(ss_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ss_ticket_number) AS total_transactions
    FROM 
        store_sales
    GROUP BY 
        ss_store_sk
)
SELECT 
    cd.full_name,
    ad.full_address,
    ad.ca_city,
    ad.ca_state,
    ss.total_items_sold,
    ss.total_sales,
    ss.total_transactions
FROM 
    CustomerDetails cd
JOIN 
    AddressDetails ad ON cd.c_customer_sk = cd.c_current_addr_sk
JOIN 
    SalesSummary ss ON ss.ss_store_sk = ad.ca_address_sk
WHERE 
    cd.demo_count > 0
    AND ad.ca_state = 'CA'
ORDER BY 
    ss.total_sales DESC
FETCH FIRST 100 ROWS ONLY;
