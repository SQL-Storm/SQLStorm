
WITH RankedSales AS (
    SELECT 
        ws.ws_item_sk,
        ws.ws_sales_price,
        ws.ws_sold_date_sk,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_net_profit DESC) AS rn
    FROM 
        web_sales ws
    WHERE 
        EXISTS (
            SELECT 1 
            FROM customer c 
            WHERE c.c_customer_sk = ws.ws_bill_customer_sk
              AND c.c_birth_year BETWEEN 1940 AND 2000
              AND c.c_preferred_cust_flag = 'Y'
        )
),
CustomerAddressInfo AS (
    SELECT 
        ca.ca_address_id,
        ca.ca_city,
        ca.ca_state,
        COUNT(DISTINCT c.c_customer_id) AS num_customers
    FROM 
        customer_address ca
    LEFT JOIN customer c ON c.c_current_addr_sk = ca.ca_address_sk
    GROUP BY 
        ca.ca_address_id, ca.ca_city, ca.ca_state
),
CustomerDemographicIncome AS (
    SELECT 
        cd.cd_gender,
        cd.cd_marital_status,
        COUNT(DISTINCT c.c_customer_id) AS demographic_count,
        SUM(cd.cd_purchase_estimate) AS total_purchase_estimate
    FROM 
        customer_demographics cd
    JOIN customer c ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        cd.cd_gender, cd.cd_marital_status
    HAVING 
        SUM(cd.cd_purchase_estimate) > 1000
)
SELECT 
    c.c_customer_id,
    c.c_first_name,
    c.c_last_name,
    RANK() OVER (ORDER BY MAX(rs.ws_sales_price) DESC) AS sales_rank,
    CASE 
        WHEN ca.ca_city IS NULL THEN 'Unknown City' 
        ELSE ca.ca_city 
    END AS customer_city,
    SUM(cd.total_purchase_estimate) AS total_estimated_purchases,
    ARRAY_AGG(DISTINCT ca.ca_state) AS associated_states
FROM 
    customer c
LEFT JOIN RankedSales rs ON c.c_customer_sk = rs.ws_item_sk
LEFT JOIN CustomerAddressInfo ca ON ca.num_customers > 0
LEFT JOIN CustomerDemographicIncome cd ON cd.demographic_count > 10
WHERE 
    rs.rn = 1 
    AND (c.c_birth_year IS NULL OR c.c_birth_year >= 1980)
GROUP BY 
    c.c_customer_id, c.c_first_name, c.c_last_name, ca.ca_city
HAVING 
    COUNT(DISTINCT cd.cd_gender) > 1
UNION ALL
SELECT 
    NULL AS customer_id,
    NULL AS first_name,
    NULL AS last_name,
    NULL AS sales_rank,
    'Aggregate' AS customer_city,
    SUM(total_purchase_estimate) AS total_estimated_purchases,
    NULL AS associated_states
FROM 
    CustomerDemographicIncome
HAVING 
    COUNT(*) > 5
ORDER BY 
    sales_rank ASC NULLS LAST;
