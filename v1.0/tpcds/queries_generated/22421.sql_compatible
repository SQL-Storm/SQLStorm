
WITH RECURSIVE address_statistics AS (
    SELECT 
        ca_state,
        COUNT(DISTINCT ca_address_sk) AS unique_addresses,
        AVG(ca_gmt_offset) AS avg_gmt_offset
    FROM 
        customer_address
    GROUP BY 
        ca_state
),
customer_summary AS (
    SELECT 
        c.c_customer_sk, 
        c.c_current_cdemo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        SUM(ws.ws_net_profit) AS total_profits,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        c.c_birth_year > (SELECT AVG(d.d_year) FROM date_dim d)
    GROUP BY 
        c.c_customer_sk, cd.cd_gender, cd.cd_marital_status
),
high_value_customers AS (
    SELECT 
        cs.c_customer_sk,
        cs.total_orders,
        cs.total_profits,
        CASE 
            WHEN cs.total_profits > 1000 THEN 'High Value'
            ELSE 'Regular'
        END AS customer_type
    FROM 
        customer_summary cs
),
final_analysis AS (
    SELECT 
        hs.customer_type,
        hs.total_orders,
        hs.total_profits,
        COALESCE(a.unique_addresses, 0) AS unique_addresses,
        a.avg_gmt_offset
    FROM 
        high_value_customers hs
    LEFT JOIN 
        address_statistics a ON hs.customer_type = 
        CASE 
            WHEN hs.total_orders > 50 THEN 'High Value' 
            ELSE NULL 
        END
)
SELECT 
    f.customer_type,
    f.total_orders,
    f.total_profits,
    f.unique_addresses,
    f.avg_gmt_offset,
    (SELECT SUM(ss.ss_ext_sales_price) 
     FROM store_sales ss 
     WHERE ss.ss_sold_date_sk = (SELECT MAX(ws.ws_sold_date_sk) 
                                  FROM web_sales ws 
                                  WHERE ws.ws_bill_customer_sk = f.c_customer_sk)) AS recent_sales_total
FROM 
    final_analysis f
WHERE 
    f.total_profits IS NOT NULL
ORDER BY 
    f.total_profits DESC
LIMIT 10;
