
WITH sales_summary AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_paid) AS total_sales,
        AVG(ws.ws_net_paid) AS average_sales_price,
        CAST(d.d_date AS DATE) AS sale_date,
        m.d_month_seq AS month_seq,
        m.d_year AS sales_year
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    JOIN 
        time_dim t ON ws.ws_sold_time_sk = t.t_time_sk
    JOIN 
        warehouse w ON ws.ws_warehouse_sk = w.w_warehouse_sk
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        income_band ib ON cd.cd_purchase_estimate BETWEEN ib.ib_lower_bound AND ib.ib_upper_bound
    JOIN 
        promotion p ON ws.ws_promo_sk = p.p_promo_sk
    GROUP BY 
        ws.ws_item_sk, d.d_date, m.d_month_seq, m.d_year
),
ranked_sales AS (
    SELECT 
        ss.*, 
        RANK() OVER (PARTITION BY ss.sales_year ORDER BY ss.total_sales DESC) AS sales_rank
    FROM 
        sales_summary ss
)
SELECT 
    rs.sale_date,
    rs.month_seq,
    rs.sales_year,
    rs.ws_item_sk,
    rs.total_quantity,
    rs.total_sales,
    rs.average_sales_price,
    rs.sales_rank
FROM 
    ranked_sales rs
WHERE 
    rs.sales_rank <= 10
ORDER BY 
    rs.sales_year, rs.month_seq, rs.sales_rank;
