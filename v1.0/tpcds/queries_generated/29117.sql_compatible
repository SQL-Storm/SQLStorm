
WITH RankedCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        ROW_NUMBER() OVER (PARTITION BY ca.ca_state ORDER BY c.c_birth_year ASC) AS rn
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        c.c_birth_year BETWEEN 1980 AND 2000
),
FilteredCustomers AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS FullName,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status
    FROM 
        RankedCustomers c
    WHERE 
        c.rn <= 5
)
SELECT 
    fc.FullName,
    fc.ca_city,
    fc.ca_state,
    fc.cd_gender,
    fc.cd_marital_status,
    COUNT(ws.ws_order_number) AS TotalOrders,
    SUM(ws.ws_sales_price) AS TotalSpent,
    AVG(ws.ws_sales_price) AS AvgOrderValue
FROM 
    FilteredCustomers fc
LEFT JOIN 
    web_sales ws ON fc.c_customer_sk = ws.ws_bill_customer_sk
GROUP BY 
    fc.FullName,
    fc.ca_city,
    fc.ca_state,
    fc.cd_gender,
    fc.cd_marital_status
ORDER BY 
    TotalSpent DESC
FETCH FIRST 10 ROWS ONLY;
