WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY SUM(ws.ws_sales_price) DESC) AS sales_rank
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        c.c_current_addr_sk IS NOT NULL
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
TopCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cs.total_sales,
        cs.order_count
    FROM 
        CustomerSales cs
    JOIN 
        customer c ON cs.c_customer_sk = c.c_customer_sk
    WHERE 
        cs.sales_rank <= 10
),
SalesStats AS (
    SELECT 
        DATE(d.d_date) AS sale_date,
        SUM(ws.ws_sales_price) AS daily_sales,
        AVG(ws.ws_sales_price) AS avg_sales_price,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY 
        DATE(d.d_date)
),
ReturnStats AS (
    SELECT 
        kr.returned_date_sk,
        SUM(kr.cr_return_amount) AS total_returns
    FROM 
        catalog_returns kr
    GROUP BY 
        kr.returned_date_sk
)
SELECT 
    tc.c_first_name || ' ' || tc.c_last_name AS customer_name,
    tc.total_sales,
    tc.order_count,
    COALESCE(ss.daily_sales, 0) AS daily_sales,
    COALESCE(ss.avg_sales_price, 0) AS avg_sales_price,
    COALESCE(rs.total_returns, 0) AS total_returns
FROM 
    TopCustomers tc
LEFT JOIN 
    (SELECT sale_date, SUM(daily_sales) AS daily_sales, AVG(avg_sales_price) AS avg_sales_price
     FROM SalesStats
     WHERE daily_sales > 500
     GROUP BY sale_date) ss ON ss.sale_date = cast('2002-10-01' as date)
LEFT JOIN 
    (SELECT returned_date_sk, total_returns
     FROM ReturnStats
     WHERE total_returns > 50) rs ON rs.returned_date_sk = cast('2002-10-01' as date)
ORDER BY 
    tc.total_sales DESC;