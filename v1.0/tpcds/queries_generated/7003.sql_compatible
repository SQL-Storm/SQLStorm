
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        cd.cd_gender,
        cd.cd_marital_status,
        hd.hd_income_band_sk
    FROM 
        web_sales ws
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        household_demographics hd ON c.c_current_hdemo_sk = hd.hd_demo_sk
    WHERE 
        ws.ws_sold_date_sk >= 2459640 AND ws.ws_sold_date_sk <= 2459647 
    GROUP BY 
        c.c_customer_id, cd.cd_gender, cd.cd_marital_status, hd.hd_income_band_sk
),
SalesAnalysis AS (
    SELECT 
        gender,
        marital_status,
        income_band,
        COUNT(DISTINCT customer_id) AS unique_customers,
        SUM(total_profit) AS total_profit,
        AVG(order_count) AS avg_order_count,
        PERCENTILE_CONT(0.5) WITHIN GROUP (ORDER BY total_profit) AS median_profit
    FROM (
        SELECT 
            CASE WHEN cd_gender = 'F' THEN 'Female' ELSE 'Male' END AS gender,
            cd_marital_status AS marital_status,
            hd_income_band_sk AS income_band,
            c_customer_id,
            total_profit,
            order_count
        FROM 
            CustomerSales
    ) AS CustomerSummary
    GROUP BY 
        gender, marital_status, income_band
)

SELECT 
    gender,
    marital_status,
    income_band,
    unique_customers,
    total_profit,
    avg_order_count,
    median_profit
FROM 
    SalesAnalysis
ORDER BY 
    total_profit DESC, unique_customers DESC;
