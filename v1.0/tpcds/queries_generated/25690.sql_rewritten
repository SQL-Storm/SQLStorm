WITH CustomerDetails AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
WebSalesAggregated AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(ws_order_number) AS total_orders
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk BETWEEN 2450000 AND 2450500  
    GROUP BY 
        ws_bill_customer_sk
),
HighValueCustomers AS (
    SELECT 
        cd.full_name,
        cd.ca_city,
        cd.ca_state,
        cd.ca_country,
        wsp.total_sales,
        wsp.total_orders
    FROM 
        CustomerDetails cd
    JOIN 
        WebSalesAggregated wsp ON cd.c_customer_id = wsp.ws_bill_customer_sk
    WHERE 
        wsp.total_sales > 1000  
)
SELECT 
    full_name,
    ca_city,
    ca_state,
    ca_country,
    total_sales,
    total_orders,
    CASE 
        WHEN total_orders > 10 THEN 'Frequent Buyer'
        ELSE 'Occasional Buyer'
    END AS customer_type
FROM 
    HighValueCustomers
ORDER BY 
    total_sales DESC
LIMIT 50;