
WITH customer_stats AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_credit_rating,
        COALESCE(SUM(ss.ss_net_profit), 0) AS total_store_sales,
        COALESCE(SUM(ws.ws_net_profit), 0) AS total_web_sales,
        RANK() OVER (PARTITION BY cd.cd_gender ORDER BY COALESCE(SUM(ss.ss_net_profit), 0) DESC) AS rank_by_gender
    FROM customer AS c
    LEFT JOIN customer_demographics AS cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN store_sales AS ss ON c.c_customer_sk = ss.ss_customer_sk
    LEFT JOIN web_sales AS ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        cd.cd_gender, 
        cd.cd_marital_status, 
        cd.cd_credit_rating
), 
promotions AS (
    SELECT 
        p.p_promo_sk, 
        p.p_promo_name, 
        COUNT(DISTINCT cs.cs_order_number) AS promo_sales_count
    FROM promotion AS p
    LEFT JOIN catalog_sales AS cs ON p.p_promo_sk = cs.cs_promo_sk
    GROUP BY p.p_promo_sk, p.p_promo_name
), 
inventory_levels AS (
    SELECT 
        i.i_item_sk,
        SUM(i.inv_quantity_on_hand) AS total_quantity_on_hand
    FROM inventory AS i
    GROUP BY i.i_item_sk
)

SELECT 
    cs.c_customer_sk,
    cs.c_first_name,
    cs.c_last_name,
    cs.cd_gender,
    cs.cd_marital_status,
    cs.cd_credit_rating,
    cs.total_store_sales,
    cs.total_web_sales,
    p.promo_sales_count,
    CASE 
        WHEN cs.total_store_sales > 0 THEN 'Store shopper'
        WHEN cs.total_web_sales > 0 THEN 'Web shopper'
        ELSE 'No sales'
    END AS shopping_behavior,
    COALESCE(i.total_quantity_on_hand, 0) AS inventory_balance,
    COALESCE(cs.rank_by_gender, 0) AS rank_gender
FROM customer_stats AS cs
LEFT JOIN promotions AS p ON cs.total_store_sales > 500 OR cs.total_web_sales > 500
LEFT JOIN inventory_levels AS i ON i.i_item_sk IN (SELECT DISTINCT ss.ss_item_sk FROM store_sales AS ss WHERE ss.ss_customer_sk = cs.c_customer_sk)

WHERE 
    (cs.cd_marital_status IS NOT NULL OR cs.cd_credit_rating IS NOT NULL)
    AND (p.promo_sales_count IS NULL OR p.promo_sales_count > 0)
    AND (cs.total_store_sales + cs.total_web_sales) > 0
ORDER BY cs.total_store_sales DESC, cs.total_web_sales DESC
LIMIT 100;
