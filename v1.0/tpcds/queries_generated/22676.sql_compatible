
WITH RankedSales AS (
    SELECT 
        ws.ws_item_sk,
        ws.ws_order_number,
        ws.ws_sales_price,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_sales_price DESC) AS SalesRank
    FROM 
        web_sales ws
),
SalesAggregates AS (
    SELECT 
        ws_item_sk,
        SUM(ws_sales_price) AS TotalSales,
        COUNT(*) AS SaleCount
    FROM 
        RankedSales
    WHERE 
        SalesRank <= 10
    GROUP BY 
        ws_item_sk
),
PromotionsData AS (
    SELECT 
        p.p_promo_sk,
        p.p_promo_name,
        COUNT(DISTINCT ws.ws_order_number) AS PromoSalesCount
    FROM 
        promotion p
    INNER JOIN web_sales ws ON p.p_promo_sk = ws.ws_promo_sk
    GROUP BY 
        p.p_promo_sk, p.p_promo_name
),
CombinedSales AS (
    SELECT 
        sa.ws_item_sk,
        sa.TotalSales,
        pd.PromoSalesCount,
        COALESCE(ROUND(ga.growth_rate, 2), 0) AS GrowthRate
    FROM 
        SalesAggregates sa
    LEFT JOIN (
        SELECT 
            ws_item_sk,
            (SUM(ws_sales_price) - LAG(SUM(ws_sales_price)) OVER (ORDER BY ws_item_sk)) / NULLIF(LAG(SUM(ws_sales_price)) OVER (ORDER BY ws_item_sk), 0) * 1.0 AS growth_rate
        FROM 
            web_sales
        GROUP BY 
            ws_item_sk
    ) ga ON sa.ws_item_sk = ga.ws_item_sk
    LEFT JOIN PromotionsData pd ON sa.ws_item_sk = pd.p_promo_sk
)
SELECT 
    c.c_customer_id,
    ca.ca_city,
    cs.TotalSales,
    cs.PromoSalesCount,
    cs.GrowthRate,
    COUNT(DISTINCT ws.ws_order_number) AS UniqueOrderCount
FROM 
    CombinedSales cs
JOIN 
    customer c ON c.c_customer_sk = ws_bill_customer_sk
JOIN 
    customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
LEFT JOIN 
    store s ON s.s_store_sk = (
        SELECT s_store_sk 
        FROM store_sales 
        WHERE ss_item_sk = cs.ws_item_sk 
        AND ss_sold_date_sk = (
            SELECT MAX(ss_sold_date_sk) 
            FROM store_sales 
            WHERE ss_item_sk = cs.ws_item_sk
        )
        LIMIT 1
    )
LEFT JOIN 
    web_sales ws ON ws.ws_item_sk = cs.ws_item_sk
WHERE 
    cs.TotalSales IS NOT NULL AND
    cs.PromoSalesCount IS NOT NULL AND
    (ca.ca_country IS NULL OR ca.ca_country <> 'Unknown')
GROUP BY 
    c.c_customer_id, ca.ca_city, cs.TotalSales, cs.PromoSalesCount, cs.GrowthRate, cs.ws_item_sk
HAVING 
    SUM(CASE WHEN cs.TotalSales > 1000 THEN 1 ELSE 0 END) > 5
ORDER BY 
    cs.TotalSales DESC;
