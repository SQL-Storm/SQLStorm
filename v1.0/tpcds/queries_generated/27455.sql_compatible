
WITH AddressDetails AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip,
        REPLACE(ca_country, ' ', '_') AS formatted_country
    FROM 
        customer_address
), 
CustomerDetails AS (
    SELECT 
        c_customer_sk,
        CONCAT(c_first_name, ' ', c_last_name) AS full_name,
        cd_gender,
        cd_marital_status,
        cd_education_status,
        cd_birth_country,
        cd_dep_count
    FROM 
        customer
    JOIN 
        customer_demographics ON c_current_cdemo_sk = cd_demo_sk
), 
SalesData AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_net_paid) AS total_spent,
        COUNT(ws_order_number) AS total_orders
    FROM 
        web_sales
    GROUP BY 
        ws_bill_customer_sk
)
SELECT 
    c.full_name,
    a.full_address,
    a.ca_city,
    a.ca_state,
    a.ca_zip,
    a.formatted_country,
    c.cd_gender,
    c.cd_marital_status,
    c.cd_education_status,
    c.cd_birth_country,
    c.cd_dep_count,
    COALESCE(s.total_spent, 0) AS total_spent,
    COALESCE(s.total_orders, 0) AS total_orders
FROM 
    CustomerDetails c
JOIN 
    AddressDetails a ON c.c_customer_sk = a.ca_address_sk
LEFT JOIN 
    SalesData s ON c.c_customer_sk = s.ws_bill_customer_sk
WHERE 
    a.ca_state = 'NY' 
    AND c.cd_marital_status = 'M'
ORDER BY 
    total_spent DESC 
FETCH FIRST 50 ROWS ONLY;
