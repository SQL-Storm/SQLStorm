
WITH SalesData AS (
    SELECT 
        ws_sold_date_sk,
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_ext_sales_price) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        web_sales
    GROUP BY 
        ws_sold_date_sk, ws_item_sk
),
TopSellingItems AS (
    SELECT 
        sd.ws_item_sk,
        i.i_item_desc,
        -i.i_current_price * 0.1 AS discount_price, 
        sd.total_quantity,
        sd.total_sales
    FROM 
        SalesData sd
    JOIN 
        item i ON sd.ws_item_sk = i.i_item_sk
    WHERE 
        sd.sales_rank <= 10
),
CustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        COUNT(DISTINCT sd.ws_item_sk) AS items_purchased
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        web_sales sd ON c.c_customer_sk = sd.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, cd.cd_gender, cd.cd_marital_status
)
SELECT 
    ci.c_customer_sk,
    ci.cd_gender,
    ci.cd_marital_status,
    ci.items_purchased,
    tsi.i_item_desc,
    tsi.discount_price,
    tsi.total_quantity,
    tsi.total_sales
FROM 
    CustomerInfo ci
JOIN 
    TopSellingItems tsi ON ci.items_purchased > 0
ORDER BY 
    tsi.total_sales DESC, ci.items_purchased DESC
FETCH FIRST 5 ROWS ONLY;
