
WITH AddressDetails AS (
    SELECT
        ca.city AS address_city,
        ca.state AS address_state,
        ca.zip AS address_zip,
        COUNT(DISTINCT c.c_customer_id) AS customer_count,
        STRING_AGG(DISTINCT CONCAT(c.c_first_name, ' ', c.c_last_name), ', ') AS customer_names
    FROM 
        customer_address ca
        JOIN customer c ON ca.ca_address_sk = c.c_current_addr_sk
    GROUP BY 
        ca.city, ca.state, ca.zip
),
SalesMetrics AS (
    SELECT
        w.warehouse_name,
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
        JOIN warehouse w ON ws.ws_warehouse_sk = w.w_warehouse_sk
    GROUP BY 
        w.warehouse_name
),
CombinedResults AS (
    SELECT 
        ad.address_city,
        ad.address_state,
        ad.address_zip,
        ad.customer_count,
        ad.customer_names,
        sm.warehouse_name,
        sm.total_sales,
        sm.total_orders
    FROM 
        AddressDetails ad
        JOIN SalesMetrics sm ON ad.customer_count > 10
)
SELECT 
    address_city, 
    address_state, 
    address_zip, 
    customer_count, 
    customer_names, 
    warehouse_name, 
    total_sales, 
    total_orders
FROM 
    CombinedResults
ORDER BY 
    total_sales DESC, 
    customer_count DESC;
