
WITH customer_info AS (
    SELECT
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        hd.hd_buy_potential,
        hd.hd_vehicle_count
    FROM
        customer c
        JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
        JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
        JOIN household_demographics hd ON c.c_current_hdemo_sk = hd.hd_demo_sk
),
item_summary AS (
    SELECT
        i.i_item_id,
        i.i_product_name,
        i.i_brand,
        SUM(ws.ws_quantity) AS total_quantity_sold,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        SUM(ws.ws_net_profit) AS net_profit
    FROM
        web_sales ws
        JOIN item i ON ws.ws_item_sk = i.i_item_sk
    GROUP BY
        i.i_item_id, i.i_product_name, i.i_brand
),
customer_sales AS (
    SELECT
        ci.full_name,
        ci.ca_city,
        ci.ca_state,
        is.i_item_id AS item_id,
        is.i_product_name AS product_name,
        is.i_brand AS brand,
        is.total_quantity_sold,
        is.total_sales,
        is.net_profit
    FROM
        customer_info ci
        JOIN item_summary is ON ci.c_customer_id = (
            SELECT
                ws.ws_bill_customer_sk
            FROM
                web_sales ws
            WHERE
                ws.ws_bill_customer_sk = (SELECT c.c_customer_sk FROM customer c WHERE ci.c_customer_id = c.c_customer_id)
            LIMIT 1
        )
)
SELECT
    full_name,
    ca_city,
    ca_state,
    item_id,
    product_name,
    brand,
    total_quantity_sold,
    total_sales,
    net_profit,
    CASE 
        WHEN net_profit > 1000 THEN 'High Profit'
        WHEN net_profit BETWEEN 500 AND 1000 THEN 'Medium Profit'
        ELSE 'Low Profit'
    END AS profit_category
FROM
    customer_sales
ORDER BY
    total_sales DESC
LIMIT 100;
