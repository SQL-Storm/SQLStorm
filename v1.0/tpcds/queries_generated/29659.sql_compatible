
WITH processed_addresses AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        LOWER(ca_city) AS city_lower,
        TRIM(ca_zip) AS zip_trimmed
    FROM 
        customer_address
),
customer_info AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        d.d_date AS registration_date,
        cd.cd_gender,
        CASE 
            WHEN cd.cd_marital_status = 'M' THEN 'Married' 
            ELSE 'Single' 
        END AS marital_status
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        date_dim d ON c.c_first_sales_date_sk = d.d_date_sk
),
sales_data AS (
    SELECT 
        ss.c_customer_sk,
        SUM(ss.ss_net_profit) AS total_net_profit,
        COUNT(ss.ss_ticket_number) AS purchase_count
    FROM 
        store_sales ss
    GROUP BY 
        ss.c_customer_sk
)
SELECT 
    ci.full_name,
    ci.city_lower,
    pa.full_address,
    COALESCE(sd.total_net_profit, 0) AS total_net_profit,
    COALESCE(sd.purchase_count, 0) AS purchase_count,
    ci.marital_status
FROM 
    customer_info ci
JOIN 
    processed_addresses pa ON ci.c_customer_sk = pa.ca_address_sk
LEFT JOIN 
    sales_data sd ON ci.c_customer_sk = sd.c_customer_sk
WHERE 
    ci.marital_status = 'Married' 
    AND COALESCE(sd.purchase_count, 0) > 5
ORDER BY 
    total_net_profit DESC;
