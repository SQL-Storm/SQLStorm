
WITH AddressDetails AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip
    FROM 
        customer_address
),
CustomerDetails AS (
    SELECT 
        c_customer_sk,
        CONCAT(c_first_name, ' ', c_last_name) AS full_name,
        cd_demo_sk,
        cd_gender,
        cd_marital_status,
        cd_education_status
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
DateDetails AS (
    SELECT 
        d_date_sk,
        TO_CHAR(d_date, 'YYYY-MM-DD') AS formatted_date,
        d_day_name
    FROM 
        date_dim
    WHERE 
        d_date >= '2023-01-01' AND d_date <= '2023-12-31'
),
SalesData AS (
    SELECT 
        ws_order_number,
        ws_item_sk,
        ws_bill_customer_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_ext_sales_price) AS total_sales
    FROM 
        web_sales
    GROUP BY 
        ws_order_number, ws_item_sk, ws_bill_customer_sk
),
FinalReport AS (
    SELECT 
        cust.full_name,
        addr.full_address,
        addr.ca_city,
        addr.ca_state,
        addr.ca_zip,
        date.formatted_date,
        date.d_day_name,
        sales.total_quantity,
        sales.total_sales
    FROM 
        CustomerDetails cust
    JOIN 
        AddressDetails addr ON cust.c_customer_sk = addr.ca_address_sk
    JOIN 
        DateDetails date ON date.d_date_sk IN (SELECT ws_ship_date_sk FROM web_sales WHERE ws_bill_customer_sk = cust.c_customer_sk)
    JOIN 
        SalesData sales ON sales.ws_bill_customer_sk = cust.c_customer_sk
)
SELECT 
    full_name,
    full_address,
    ca_city,
    ca_state,
    ca_zip,
    formatted_date,
    d_day_name,
    total_quantity,
    total_sales
FROM 
    FinalReport
ORDER BY 
    total_sales DESC
LIMIT 100;
