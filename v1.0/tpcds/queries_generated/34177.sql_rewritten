WITH RECURSIVE sales_hierarchy AS (
    SELECT 
        c_customer_sk,
        c_first_name || ' ' || c_last_name AS customer_name,
        SUM(ws_ext_sales_price) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY c_customer_sk ORDER BY SUM(ws_ext_sales_price) DESC) AS rank
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        ws.ws_sold_date_sk >= (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2001) - 30  
    GROUP BY 
        c_customer_sk, c_first_name, c_last_name
),
top_customers AS (
    SELECT 
        *,
        NTILE(10) OVER (ORDER BY total_sales DESC) AS income_percentile
    FROM 
        sales_hierarchy
    WHERE 
        rank = 1
),
address_details AS (
    SELECT 
        ca.ca_address_sk,
        ca.ca_city,
        ca.ca_state,
        wd.web_site_id,
        CASE 
            WHEN ca.ca_state IS NULL THEN 'Unknown State'
            ELSE ca.ca_state
        END AS state_info
    FROM 
        customer_address ca
    LEFT JOIN 
        web_site wd ON wd.web_site_sk = (SELECT MIN(ws.web_site_sk) FROM web_sales ws WHERE ws.ws_bill_customer_sk = (SELECT c.c_customer_sk FROM customer c WHERE c.c_customer_sk IN (SELECT c_customer_sk FROM top_customers)))
)
SELECT 
    tc.customer_name,
    tc.total_sales,
    tc.income_percentile,
    ad.ca_city,
    ad.state_info
FROM 
    top_customers tc
LEFT JOIN 
    address_details ad ON tc.c_customer_sk = (SELECT sr_customer_sk FROM store_returns WHERE sr_return_amt > 0 AND sr_customer_sk = tc.c_customer_sk LIMIT 1)
ORDER BY 
    tc.total_sales DESC
LIMIT 100;