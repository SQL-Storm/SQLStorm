
WITH RECURSIVE Sales_CTE AS (
    SELECT 
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_sales_price) AS total_sales,
        ws_sold_date_sk,
        1 AS level
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk >= (SELECT MIN(d_date_sk) FROM date_dim WHERE d_year = 2023)
    GROUP BY 
        ws_item_sk, ws_sold_date_sk

    UNION ALL

    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_sales_price) AS total_sales,
        ws.ws_sold_date_sk,
        level + 1
    FROM 
        web_sales ws
    JOIN 
        Sales_CTE s ON ws.ws_item_sk = s.ws_item_sk
    WHERE 
        ws.ws_sold_date_sk = s.ws_sold_date_sk + 1
    GROUP BY 
        ws.ws_item_sk, ws.ws_sold_date_sk, level
),
Item_Summary AS (
    SELECT 
        i.i_item_id,
        i.i_item_desc,
        COALESCE(SUM(s.total_quantity), 0) AS total_quantity,
        COALESCE(SUM(s.total_sales), 0) AS total_sales
    FROM 
        item i
    LEFT JOIN 
        Sales_CTE s ON i.i_item_sk = s.ws_item_sk
    GROUP BY 
        i.i_item_id, i.i_item_desc
),
Customer_Preferences AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY cd.cd_purchase_estimate DESC) AS rn
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        cd.cd_purchase_estimate IS NOT NULL
)
SELECT 
    p.c_first_name,
    p.c_last_name,
    p.cd_gender,
    p.cd_marital_status,
    SUM(i.total_sales) AS total_sales,
    AVG(i.total_quantity) AS avg_quantity_sold,
    CASE 
        WHEN SUM(i.total_sales) >= 1000 THEN 'High'
        WHEN SUM(i.total_sales) BETWEEN 500 AND 999 THEN 'Medium'
        ELSE 'Low' 
    END AS sales_category
FROM 
    Item_Summary i
JOIN 
    Customer_Preferences p ON i.i_item_id IN (
        SELECT
            DISTINCT wp.wp_id 
        FROM
            web_page wp 
        WHERE 
            wp.wp_web_page_sk = p.c_customer_sk
    )
WHERE 
    p.rn = 1 
GROUP BY 
    p.c_first_name, 
    p.c_last_name, 
    p.cd_gender, 
    p.cd_marital_status
HAVING 
    SUM(i.total_sales) > 0
ORDER BY 
    total_sales DESC;
