
WITH customer_summary AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        SUM(ss.ss_sales_price) AS total_spent,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        SUM(ss.ss_quantity) AS total_items_purchased
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        cd.cd_gender, 
        cd.cd_marital_status, 
        cd.cd_purchase_estimate
),
high_value_customers AS (
    SELECT 
        c.*, 
        cs.total_spent,
        cs.total_orders,
        cs.total_items_purchased
    FROM 
        customer_summary cs
    JOIN 
        customer c ON cs.c_customer_sk = c.c_customer_sk
    WHERE 
        cs.total_spent > (SELECT AVG(total_spent) FROM customer_summary)
)

SELECT
    hvc.c_first_name,
    hvc.c_last_name,
    hvc.cd_gender,
    hvc.cd_marital_status,
    hvc.total_spent,
    hvc.total_orders,
    hvc.total_items_purchased,
    (SELECT COUNT(*) FROM customer_address ca WHERE ca.ca_city = 'Los Angeles') AS los_angeles_addresses,
    (SELECT COUNT(*) FROM customer_demographics cd WHERE cd.cd_gender = 'F') AS female_customers
FROM 
    high_value_customers hvc
ORDER BY 
    hvc.total_spent DESC
FETCH FIRST 100 ROWS ONLY;
