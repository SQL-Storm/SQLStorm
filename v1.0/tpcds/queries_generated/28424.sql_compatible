
SELECT 
    ca.ca_state,
    COUNT(DISTINCT c.c_customer_id) AS unique_customers,
    COUNT(DISTINCT ss.ss_ticket_number) AS unique_orders,
    SUM(ss.ss_sales_price) AS total_sales,
    AVG(CASE 
        WHEN c.c_gender = 'M' THEN ss.ss_sales_price 
        ELSE NULL 
    END) AS avg_sales_male,
    AVG(CASE 
        WHEN c.c_gender = 'F' THEN ss.ss_sales_price 
        ELSE NULL 
    END) AS avg_sales_female,
    MAX(ss.ss_sales_price) AS max_sale,
    MIN(ss.ss_sales_price) AS min_sale
FROM 
    customer_address AS ca
JOIN 
    customer AS c ON ca.ca_address_sk = c.c_current_addr_sk
JOIN 
    store_sales AS ss ON c.c_customer_sk = ss.ss_customer_sk
JOIN 
    customer_demographics AS cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
GROUP BY 
    ca.ca_state
HAVING 
    COUNT(DISTINCT c.c_customer_id) > 100
ORDER BY 
    total_sales DESC
LIMIT 10;
