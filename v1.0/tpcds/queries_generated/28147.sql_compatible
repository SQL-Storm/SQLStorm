
WITH enriched_customer_data AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        c.c_email_address,
        CD.cd_gender,
        CD.cd_marital_status,
        CA.ca_city,
        CA.ca_state,
        CA.ca_country,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        CASE 
            WHEN CD.cd_gender = 'M' THEN 'Male'
            WHEN CD.cd_gender = 'F' THEN 'Female'
            ELSE 'Other'
        END AS gender_description
    FROM 
        customer c
    JOIN 
        customer_demographics CD ON c.c_current_cdemo_sk = CD.cd_demo_sk
    JOIN 
        customer_address CA ON c.c_current_addr_sk = CA.ca_address_sk
),
purchase_summary AS (
    SELECT 
        ws_bill_customer_sk,
        COUNT(ws_order_number) AS total_orders,
        SUM(ws_ext_sales_price) AS total_sales
    FROM 
        web_sales
    GROUP BY 
        ws_bill_customer_sk
),
demographics_summary AS (
    SELECT 
        hd.hd_demo_sk,
        COUNT(hd.hd_dep_count) AS household_count,
        SUM(hd.hd_vehicle_count) AS total_vehicles
    FROM 
        household_demographics hd
    GROUP BY 
        hd.hd_demo_sk
)
SELECT 
    ECD.full_name,
    ECD.c_email_address,
    ECD.gender_description,
    ECD.ca_city,
    ECD.ca_state,
    COALESCE(PS.total_orders, 0) AS total_orders,
    COALESCE(PS.total_sales, 0) AS total_sales,
    DS.household_count,
    DS.total_vehicles
FROM 
    enriched_customer_data ECD
LEFT JOIN 
    purchase_summary PS ON ECD.c_customer_id = PS.ws_bill_customer_sk
LEFT JOIN 
    demographics_summary DS ON ECD.c_current_cdemo_sk = DS.hd_demo_sk
ORDER BY 
    total_sales DESC
FETCH FIRST 100 ROWS ONLY;
