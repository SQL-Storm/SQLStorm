
WITH address_summary AS (
    SELECT 
        ca_state,
        COUNT(ca_address_sk) AS total_addresses,
        MAX(CASE WHEN ca_city LIKE 'San%' THEN 1 ELSE 0 END) AS has_san_city,
        SUM(LENGTH(ca_street_name)) AS total_street_name_length
    FROM 
        customer_address
    GROUP BY 
        ca_state
),
customer_summary AS (
    SELECT 
        cd_gender,
        COUNT(c_customer_sk) AS customer_count,
        SUM(cd_dep_count) AS total_dependents,
        AVG(cd_purchase_estimate) AS avg_purchase_estimate
    FROM 
        customer
    JOIN 
        customer_demographics ON c_current_cdemo_sk = cd_demo_sk
    GROUP BY 
        cd_gender
),
sales_summary AS (
    SELECT 
        ws.web_site_id,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws_order_number) AS total_orders
    FROM 
        web_sales ws
    GROUP BY 
        ws.web_site_id
)
SELECT 
    a.ca_state,
    a.total_addresses,
    a.has_san_city,
    a.total_street_name_length,
    c.cd_gender,
    c.customer_count,
    c.total_dependents,
    c.avg_purchase_estimate,
    s.web_site_id,
    s.total_sales,
    s.total_orders
FROM 
    address_summary a
JOIN 
    customer_summary c ON a.ca_state = 'CA' AND c.customer_count > 1000
JOIN 
    sales_summary s ON s.total_sales > 100000
ORDER BY 
    s.total_sales DESC, a.total_addresses DESC;
