
WITH SalesData AS (
    SELECT 
        ws.web_site_sk,
        ws.web_name,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        AVG(ws.ws_net_paid_inc_tax) AS average_order_value,
        ROW_NUMBER() OVER (PARTITION BY ws.web_site_sk ORDER BY SUM(ws.ws_ext_sales_price) DESC) AS rank
    FROM 
        web_sales ws
    LEFT JOIN 
        web_site w ON ws.ws_web_site_sk = w.web_site_sk
    WHERE 
        ws.ws_sold_date_sk BETWEEN (
            SELECT MIN(d.d_date_sk)
            FROM date_dim d
            WHERE d.d_year = 2023
        ) AND (
            SELECT MAX(d.d_date_sk)
            FROM date_dim d
            WHERE d.d_year = 2023
        )
    GROUP BY 
        ws.web_site_sk, ws.web_name
), 
RankedSales AS (
    SELECT 
        rd.web_site_sk, 
        rd.web_name, 
        rd.total_sales, 
        rd.total_orders, 
        rd.average_order_value,
        rd.rank
    FROM 
        SalesData rd
    WHERE 
        rd.rank <= 10
)
SELECT 
    r.web_name,
    r.total_sales,
    r.total_orders,
    r.average_order_value,
    COALESCE(cd.cd_gender, 'UNKNOWN') AS gender,
    CASE 
        WHEN cd.cd_marital_status = 'M' THEN 'Married'
        WHEN cd.cd_marital_status = 'S' THEN 'Single'
        ELSE 'Other' 
    END AS marital_status,
    COUNT(DISTINCT c.c_customer_id) AS customer_count
FROM 
    RankedSales r
LEFT JOIN 
    customer c ON c.c_current_addr_sk IN (
        SELECT ca.ca_address_sk 
        FROM customer_address ca 
        WHERE ca.ca_country = 'USA'
    )
LEFT JOIN 
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
LEFT JOIN 
    store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
WHERE 
    r.total_sales > 10000
GROUP BY 
    r.web_name, r.total_sales, r.total_orders, r.average_order_value, cd.cd_gender, cd.cd_marital_status
ORDER BY 
    r.total_sales DESC
