
WITH customer_sales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_paid) AS total_web_sales,
        SUM(cs.cs_net_paid) AS total_catalog_sales,
        SUM(ss.ss_net_paid) AS total_store_sales,
        COUNT(DISTINCT ws.ws_order_number) AS web_transactions,
        COUNT(DISTINCT cs.cs_order_number) AS catalog_transactions,
        COUNT(DISTINCT ss.ss_ticket_number) AS store_transactions
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        catalog_sales cs ON c.c_customer_sk = cs.cs_bill_customer_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY 
        c.c_customer_id
),

customer_demo AS (
    SELECT 
        cd.cd_demo_sk, 
        cd.cd_customer_id,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating
    FROM 
        customer_demographics cd
    WHERE 
        cd.cd_purchase_estimate > 1000
),

ranked_sales AS (
    SELECT 
        cs.c_customer_id,
        cs.total_web_sales,
        cs.total_catalog_sales,
        cs.total_store_sales,
        RANK() OVER (PARTITION BY cs.c_customer_id ORDER BY (cs.total_web_sales + cs.total_catalog_sales + cs.total_store_sales) DESC) AS sales_rank
    FROM 
        customer_sales cs
)

SELECT 
    r.c_customer_id,
    COALESCE(r.total_web_sales, 0) AS web_sales,
    COALESCE(r.total_catalog_sales, 0) AS catalog_sales,
    COALESCE(r.total_store_sales, 0) AS store_sales,
    rd.cd_gender,
    rd.cd_marital_status,
    rd.cd_education_status,
    rd.cd_purchase_estimate,
    rd.cd_credit_rating,
    r.sales_rank
FROM 
    ranked_sales r
JOIN 
    customer_demo rd ON r.c_customer_id = rd.cd_customer_id
WHERE 
    (r.sales_rank = 1 AND rd.cd_gender = 'M') OR 
    (r.sales_rank = 2 AND rd.cd_marital_status = 'S') OR 
    (r.sales_rank <= 3 AND rd.cd_education_status IN ('Bachelors', 'Masters'))
ORDER BY 
    r.sales_rank, r.c_customer_id
FETCH FIRST 100 ROWS ONLY;
