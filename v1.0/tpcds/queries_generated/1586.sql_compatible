
WITH ItemSales AS (
  SELECT 
    ws_item_sk,
    SUM(ws_net_profit) AS total_net_profit,
    COUNT(DISTINCT ws_order_number) AS order_count,
    ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_net_profit) DESC) AS profit_rank
  FROM 
    web_sales
  GROUP BY 
    ws_item_sk
),
BestSellingItems AS (
  SELECT 
    i.i_item_id,
    i.i_item_desc,
    is.total_net_profit,
    is.order_count
  FROM 
    item i
  JOIN 
    ItemSales is ON i.i_item_sk = is.ws_item_sk
  WHERE 
    is.profit_rank <= 10
),
CustomerReturns AS (
  SELECT 
    sr_customer_sk,
    COUNT(sr_ticket_number) AS return_count,
    SUM(sr_return_amt_inc_tax) AS total_return_amount
  FROM 
    store_returns
  WHERE 
    sr_returned_date_sk BETWEEN (SELECT MAX(d_date_sk) FROM date_dim) - 30 AND (SELECT MAX(d_date_sk) FROM date_dim)
  GROUP BY 
    sr_customer_sk
)
SELECT 
  c.c_customer_id,
  c.c_first_name,
  c.c_last_name,
  bsi.i_item_desc,
  bsi.total_net_profit,
  cr.return_count,
  cr.total_return_amount
FROM 
  customer c
LEFT JOIN 
  BestSellingItems bsi ON c.c_customer_sk = bsi.ws_bill_customer_sk
LEFT JOIN 
  CustomerReturns cr ON c.c_customer_sk = cr.sr_customer_sk
WHERE 
  cr.return_count IS NOT NULL OR bsi.total_net_profit > 100
ORDER BY 
  bsi.total_net_profit DESC, 
  cr.total_return_amount DESC
FETCH FIRST 50 ROWS ONLY;
