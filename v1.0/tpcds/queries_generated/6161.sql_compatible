
WITH customer_info AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        h.hd_income_band_sk,
        h.hd_buy_potential
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        household_demographics h ON h.hd_demo_sk = c.c_current_hdemo_sk
    WHERE 
        cd.cd_marital_status = 'M'
        AND cd.cd_purchase_estimate > 500
), sales_data AS (
    SELECT 
        ws.web_site_id,
        ws.ws_order_number,
        ws.ws_sales_price,
        ws.ws_net_profit,
        d.d_date
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2023
), product_info AS (
    SELECT 
        i.i_item_id,
        i.i_item_desc,
        SUM(COALESCE(ss.ss_quantity, 0)) AS total_sales_qty,
        SUM(COALESCE(ss.ss_net_profit, 0)) AS total_net_profit
    FROM 
        item i
    LEFT JOIN 
        store_sales ss ON i.i_item_sk = ss.ss_item_sk
    GROUP BY 
        i.i_item_id, i.i_item_desc
)
SELECT 
    ci.c_first_name,
    ci.c_last_name,
    ci.cd_gender,
    ci.hd_buy_potential,
    pd.i_item_desc,
    pd.total_sales_qty,
    pd.total_net_profit,
    COUNT(sd.ws_order_number) AS total_orders,
    SUM(sd.ws_sales_price) AS total_web_sales
FROM 
    customer_info ci
JOIN 
    product_info pd ON ci.hd_income_band_sk = pd.i_item_id
JOIN 
    sales_data sd ON sd.ws_order_number IN (SELECT ws_order_number FROM web_sales WHERE ws_bill_customer_sk = ci.c_customer_id)
GROUP BY 
    ci.c_first_name, ci.c_last_name, ci.cd_gender, ci.hd_buy_potential, pd.i_item_desc, pd.total_sales_qty, pd.total_net_profit
ORDER BY 
    total_net_profit DESC
LIMIT 10;
