
WITH sales_summary AS (
    SELECT 
        ws_sold_date_sk,
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_ext_sales_price) AS total_sales,
        SUM(ws_ext_tax) AS total_tax,
        SUM(ws_net_profit) AS total_profit
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk BETWEEN (SELECT MIN(d_date_sk) FROM date_dim) AND (SELECT MAX(d_date_sk) FROM date_dim)
    GROUP BY 
        ws_sold_date_sk, ws_item_sk
),
top_items AS (
    SELECT 
        item.i_item_id,
        item.i_product_name,
        SUM(ss.total_quantity) AS total_quantity_sold,
        SUM(ss.total_sales) AS total_sales_value,
        SUM(ss.total_tax) AS total_tax_collected,
        SUM(ss.total_profit) AS total_profit_generated
    FROM 
        sales_summary ss
    JOIN 
        item ON ss.ws_item_sk = item.i_item_sk
    GROUP BY 
        item.i_item_id, item.i_product_name
    ORDER BY 
        total_quantity_sold DESC
    LIMIT 10
)
SELECT 
    t.i_item_id,
    t.i_product_name,
    t.total_quantity_sold,
    t.total_sales_value,
    t.total_tax_collected,
    t.total_profit_generated,
    ca.ca_city,
    ca.ca_state,
    ca.ca_country
FROM 
    top_items t
JOIN 
    customer c ON c.c_customer_sk = (SELECT c.c_customer_sk FROM web_sales WHERE ws_item_sk = t.i_item_id LIMIT 1)
JOIN 
    customer_address ca ON ca.ca_address_sk = c.c_current_addr_sk
ORDER BY 
    t.total_sales_value DESC;
