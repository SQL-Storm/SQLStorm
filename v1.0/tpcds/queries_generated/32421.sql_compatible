
WITH RECURSIVE sales_hierarchy AS (
    SELECT 
        s_store_sk,
        ss_sold_date_sk,
        ss_item_sk,
        SUM(ss_net_profit) AS total_profit,
        1 AS level
    FROM store_sales
    GROUP BY s_store_sk, ss_sold_date_sk, ss_item_sk

    UNION ALL

    SELECT 
        sh.s_store_sk,
        ss.ss_sold_date_sk,
        ss.ss_item_sk,
        sh.total_profit + SUM(ss.ss_net_profit) AS total_profit,
        sh.level + 1
    FROM sales_hierarchy sh
    JOIN store_sales ss ON sh.ss_item_sk = ss.ss_item_sk 
                       AND sh.s_store_sk = ss.s_store_sk 
    WHERE sh.level < 3
    GROUP BY sh.s_store_sk, ss.ss_sold_date_sk, ss.ss_item_sk, sh.total_profit, sh.level
)
SELECT 
    c.c_first_name,
    c.c_last_name,
    ca.ca_city,
    s.s_store_name,
    d.d_year,
    AVG(ws.ws_net_profit) AS avg_web_profit,
    SUM(ss.ss_net_profit) AS total_store_profit
FROM customer c
JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
LEFT JOIN store s ON s.s_store_sk = c.c_customer_sk % 10  
LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
LEFT JOIN date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
JOIN sales_hierarchy sh ON s.s_store_sk = sh.s_store_sk
WHERE ca.ca_state = 'CA'
  AND d.d_year IN (1999, 2000)
  AND (c.c_birth_year IS NULL OR c.c_birth_year > 1980)
GROUP BY c.c_first_name, c.c_last_name, ca.ca_city, s.s_store_name, d.d_year
HAVING SUM(ss.ss_net_profit) > 10000
ORDER BY avg_web_profit DESC, total_store_profit DESC;
