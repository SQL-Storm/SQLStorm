
WITH RECURSIVE CustomerHierarchy AS (
    SELECT c_customer_sk, c_first_name, c_last_name, c_current_addr_sk, 0 AS level
    FROM customer
    WHERE c_current_hdemo_sk IS NULL

    UNION ALL

    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, c.c_current_addr_sk, ch.level + 1
    FROM customer c
    JOIN CustomerHierarchy ch ON c.c_current_hdemo_sk = ch.c_customer_sk
),
SalesSummary AS (
    SELECT
        c.c_customer_sk,
        SUM(ws.ws_net_paid_inc_tax) AS total_spent,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM customer c
    JOIN web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    GROUP BY c.c_customer_sk
),
TopCustomers AS (
    SELECT
        c.c_customer_sk,
        ch.c_first_name,
        ch.c_last_name,
        ss.total_spent,
        ss.total_orders,
        ROW_NUMBER() OVER (ORDER BY ss.total_spent DESC) AS rn
    FROM SalesSummary ss
    JOIN CustomerHierarchy ch ON ss.c_customer_sk = ch.c_customer_sk
    WHERE ss.total_spent > 1000
),
ItemDetails AS (
    SELECT 
        i.i_item_sk,
        i.i_item_id,
        i.i_product_name,
        COALESCE(SUM(ws.ws_quantity), 0) AS total_sold,
        COALESCE(SUM(ws.ws_net_paid), 0) AS total_revenue
    FROM item i
    LEFT JOIN web_sales ws ON i.i_item_sk = ws.ws_item_sk
    GROUP BY i.i_item_sk, i.i_item_id, i.i_product_name
)
SELECT 
    tc.c_first_name,
    tc.c_last_name,
    tc.total_spent,
    tc.total_orders,
    id.i_product_name,
    id.total_sold,
    id.total_revenue
FROM TopCustomers tc
JOIN ItemDetails id ON tc.c_customer_sk = (
    SELECT ws.ws_bill_customer_sk
    FROM web_sales ws
    WHERE ws.ws_net_paid > 0
    ORDER BY ws.ws_net_paid DESC
    FETCH FIRST 1 ROW ONLY
)
WHERE tc.rn <= 10
ORDER BY tc.total_spent DESC, id.total_revenue DESC;
