
WITH RankedCustomers AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_gender ORDER BY cd.cd_purchase_estimate DESC) AS rank
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
AddressAggregates AS (
    SELECT 
        ca.ca_state,
        COUNT(DISTINCT ca.ca_address_sk) AS unique_addresses,
        STRING_AGG(ca.ca_city, ', ') AS cities
    FROM 
        customer_address ca
    GROUP BY 
        ca.ca_state
),
SalesData AS (
    SELECT 
        ws.ws_bill_customer_sk AS customer_sk,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        SUM(ws.ws_net_paid_inc_tax) AS total_net_paid
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_bill_customer_sk
),
FinalReport AS (
    SELECT 
        rc.full_name,
        rc.cd_gender,
        rc.cd_marital_status,
        aa.unique_addresses,
        aa.cities,
        COALESCE(sd.total_sales, 0) AS total_sales,
        COALESCE(sd.total_net_paid, 0) AS total_net_paid
    FROM 
        RankedCustomers rc
    LEFT JOIN 
        AddressAggregates aa ON 1 = 1
    LEFT JOIN 
        SalesData sd ON rc.c_customer_id = sd.customer_sk
)
SELECT 
    *
FROM 
    FinalReport
WHERE 
    cd_gender = 'M' AND total_sales > 1000
ORDER BY 
    total_net_paid DESC;
