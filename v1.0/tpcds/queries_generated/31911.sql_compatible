
WITH RECURSIVE sales_summary AS (
    SELECT
        s_store_sk,
        SUM(ss_net_profit) AS total_net_profit,
        COUNT(DISTINCT ss_ticket_number) AS total_sales_count,
        ROW_NUMBER() OVER (PARTITION BY s_store_sk ORDER BY SUM(ss_net_profit) DESC) AS rn
    FROM
        store_sales
    WHERE
        ss_sold_date_sk BETWEEN 2451912 AND 2451943  
    GROUP BY
        s_store_sk
),
customer_summary AS (
    SELECT
        c.c_customer_sk,
        da.ca_state,
        COALESCE(cd.cd_gender, 'M') AS gender,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        MAX(ws.ws_net_profit) AS max_order_profit,
        PERCENTILE_CONT(0.5) WITHIN GROUP (ORDER BY ws.ws_net_profit) AS median_order_profit
    FROM
        customer c
    LEFT JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN
        customer_address da ON c.c_current_addr_sk = da.ca_address_sk
    LEFT JOIN
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE
        da.ca_state IS NOT NULL
    GROUP BY
        c.c_customer_sk, da.ca_state, cd.cd_gender
),
promotional_performance AS (
    SELECT
        p.p_promo_sk,
        p.p_promo_name,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        SUM(ws.ws_coupon_amt) AS total_coupons_used
    FROM
        promotion p
    JOIN
        web_sales ws ON p.p_promo_sk = ws.ws_promo_sk
    WHERE
        p.p_start_date_sk <= 2451900 
        AND p.p_end_date_sk >= 2451943
    GROUP BY
        p.p_promo_sk, p.p_promo_name
)
SELECT
    cs.c_customer_sk,
    cs.gender,
    cs.total_orders,
    cs.max_order_profit,
    cs.median_order_profit,
    ss.total_net_profit,
    pp.total_sales AS promotional_sales,
    pp.total_coupons_used
FROM
    customer_summary cs
JOIN
    sales_summary ss ON cs.c_customer_sk = ss.s_store_sk   
LEFT JOIN
    promotional_performance pp ON pp.p_promo_sk = (SELECT p.p_promo_sk FROM promotion p WHERE p.p_discount_active = 'Y' LIMIT 1)
WHERE
    ss.total_sales_count > 10 OR cs.total_orders > 5
ORDER BY
    ss.total_net_profit DESC, cs.total_orders DESC;
