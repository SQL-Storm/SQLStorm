
WITH RECURSIVE store_hierarchy AS (
    SELECT s_store_sk, s_store_name, s_store_id, s_manager, 0 AS level
    FROM store
    WHERE s_store_id = 'STORE_0001'
    UNION ALL
    SELECT s.s_store_sk, s.s_store_name, s.s_store_id, s.s_manager, sh.level + 1
    FROM store s
    INNER JOIN store_hierarchy sh ON sh.s_store_sk = s.s_manager
),
customer_info AS (
    SELECT 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_credit_rating,
        SUM(ss.ss_net_paid) AS total_spent
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status, cd.cd_credit_rating
),
sales_summary AS (
    SELECT 
        d.d_year AS year,
        COUNT(ws.ws_order_number) AS total_orders,
        SUM(ws.ws_net_paid) AS total_sales,
        AVG(ws.ws_net_profit) AS average_profit,
        COUNT(DISTINCT c.c_customer_sk) AS unique_customers,
        ws.ws_store_sk
    FROM web_sales ws
    JOIN customer_info c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY d.d_year, ws.ws_store_sk
),
promo_summary AS (
    SELECT 
        p.p_promo_id AS promo_id,
        COUNT(ws.ws_order_number) AS promo_orders,
        SUM(ws.ws_net_paid) AS promo_sales
    FROM promotion p
    JOIN web_sales ws ON p.p_promo_sk = ws.ws_promo_sk
    GROUP BY p.p_promo_id
)
SELECT 
    sh.s_store_name,
    si.year,
    si.total_orders,
    si.total_sales,
    si.average_profit,
    pi.promo_id,
    pi.promo_orders,
    pi.promo_sales
FROM store_hierarchy sh
LEFT JOIN sales_summary si ON sh.s_store_sk = si.ws_store_sk
LEFT JOIN promo_summary pi ON si.year = pi.promo_id
ORDER BY sh.level, si.total_sales DESC NULLS LAST;
