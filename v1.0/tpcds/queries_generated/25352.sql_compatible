
WITH AddressInfo AS (
    SELECT 
        ca_city,
        ca_state,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        COUNT(ca_address_sk) AS address_count
    FROM 
        customer_address
    GROUP BY 
        ca_city, ca_state, ca_street_number, ca_street_name, ca_street_type
),
CustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS customer_name,
        cd.cd_gender,
        cd.cd_marital_status,
        ai.full_address,
        ai.address_count,
        ai.ca_city,
        ai.ca_state
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        AddressInfo ai ON c.c_current_addr_sk = ai.ca_address_sk
),
SalesInfo AS (
    SELECT 
        ws.bill_customer_sk AS customer_id,
        SUM(ws.ext_sales_price) AS total_sales,
        AVG(ws.net_profit) AS average_profit
    FROM 
        web_sales ws
    GROUP BY 
        ws.bill_customer_sk
),
FinalReport AS (
    SELECT 
        ci.customer_name,
        ci.ca_city,
        ci.ca_state,
        si.total_sales,
        si.average_profit,
        ci.address_count
    FROM 
        CustomerInfo ci
    LEFT JOIN 
        SalesInfo si ON ci.c_customer_sk = si.customer_id
)
SELECT 
    customer_name,
    ca_city,
    ca_state,
    COALESCE(total_sales, 0) AS total_sales,
    COALESCE(average_profit, 0) AS average_profit,
    address_count
FROM 
    FinalReport
ORDER BY 
    total_sales DESC, average_profit DESC
FETCH FIRST 100 ROWS ONLY;
