WITH RECURSIVE IncomeBands AS (
    SELECT ib_income_band_sk,
           ib_lower_bound,
           ib_upper_bound,
           0 AS level
    FROM income_band
    WHERE ib_income_band_sk = 1 

    UNION ALL

    SELECT ib.ib_income_band_sk,
           ib.ib_lower_bound,
           ib.ib_upper_bound,
           ib.level + 1
    FROM income_band ib
    JOIN IncomeBands ib_parent ON ib_parent.ib_income_band_sk < ib.ib_income_band_sk
    WHERE ib_parent.ib_upper_bound < ib.ib_lower_bound
),
CustomerReturns AS (
    SELECT sr_returning_customer_sk,
           COUNT(DISTINCT sr_ticket_number) AS returns_count,
           SUM(sr_return_amt_inc_tax) AS total_returned_amount,
           SUM(sr_return_quantity) AS total_returned_quantity
    FROM store_returns
    GROUP BY sr_returning_customer_sk
),
DetailedCustomerInfo AS (
    SELECT c.c_customer_sk,
           c.c_first_name,
           c.c_last_name,
           cd.cd_gender,
           cd.cd_marital_status,
           cd.cd_purchase_estimate,
           ci.returns_count,
           ci.total_returned_amount,
           ci.total_returned_quantity,
           CASE
               WHEN ci.total_returned_amount IS NULL THEN 'No Returns'
               ELSE 'Has Returns'
           END AS return_status
    FROM customer c
    LEFT JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN CustomerReturns ci ON c.c_customer_sk = ci.sr_returning_customer_sk
),
SalesSummary AS (
    SELECT w.w_warehouse_name,
           SUM(ws_ext_sales_price) AS total_sales,
           COUNT(DISTINCT ws_order_number) AS orders_count,
           AVG(ws_net_profit) AS avg_net_profit
    FROM web_sales ws
    JOIN warehouse w ON ws.ws_warehouse_sk = w.w_warehouse_sk
    GROUP BY w.w_warehouse_name
),
FinalReport AS (
    SELECT dci.c_first_name,
           dci.c_last_name,
           dci.cd_gender,
           dci.cd_marital_status,
           sb.total_sales,
           sb.orders_count,
           sb.avg_net_profit,
           ib.ib_lower_bound,
           ib.ib_upper_bound,
           dci.return_status
    FROM DetailedCustomerInfo dci
    JOIN SalesSummary sb ON dci.c_customer_sk = sb.w_warehouse_sk 
    LEFT JOIN IncomeBands ib ON dci.cd_purchase_estimate BETWEEN ib.ib_lower_bound AND ib.ib_upper_bound
)
SELECT *
FROM FinalReport
WHERE total_sales > 1000 AND return_status = 'Has Returns'
ORDER BY total_sales DESC, avg_net_profit DESC;