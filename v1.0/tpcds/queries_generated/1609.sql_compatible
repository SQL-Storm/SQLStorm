
WITH SalesData AS (
    SELECT 
        ws.web_site_id,
        ws.ws_net_paid,
        ws.ws_sold_date_sk,
        EXTRACT(YEAR FROM d.d_date) AS sales_year,
        EXTRACT(MONTH FROM d.d_date) AS sales_month,
        SUM(ws.ws_quantity) AS total_quantity,
        ROW_NUMBER() OVER (PARTITION BY ws.web_site_id ORDER BY ws.ws_sold_date_sk DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year BETWEEN 2020 AND 2023
    GROUP BY 
        ws.web_site_id, ws.ws_net_paid, ws.ws_sold_date_sk, d.d_date
),
AggregateSales AS (
    SELECT 
        web_site_id,
        AVG(ws_net_paid) AS avg_net_paid,
        SUM(total_quantity) AS total_quantity_sold
    FROM 
        SalesData
    WHERE 
        sales_rank <= 10
    GROUP BY 
        web_site_id
),
HighValueCustomers AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_credit_rating,
        SUM(ws.ws_net_paid) AS total_spent
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        cd.cd_credit_rating = 'Good'
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_credit_rating
    HAVING 
        SUM(ws.ws_net_paid) > 1000
)
SELECT 
    hs.web_site_id,
    hs.avg_net_paid,
    hs.total_quantity_sold,
    COALESCE(hvc.total_spent, 0) AS total_spent_by_high_value_customers
FROM 
    AggregateSales hs
LEFT JOIN 
    (SELECT ws.web_site_sk, AVG(total_spent) AS total_spent 
     FROM HighValueCustomers 
     JOIN web_site ws ON ws.web_site_sk = ws.web_site_sk
     GROUP BY ws.web_site_sk) hvc 
ON 
    hs.web_site_id = hvc.web_site_sk
ORDER BY 
    hs.total_quantity_sold DESC;
