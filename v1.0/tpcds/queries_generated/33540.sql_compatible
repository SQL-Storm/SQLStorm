
WITH RECURSIVE sales_summary AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_paid) AS total_sales,
        RANK() OVER (ORDER BY SUM(ws.ws_net_paid) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023
    GROUP BY 
        ws.web_site_id
),
customer_stats AS (
    SELECT 
        c.c_customer_id,
        cd.cd_gender,
        SUM(ws.ws_quantity) AS total_purchases,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM 
        customer c 
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id, cd.cd_gender
),
best_customers AS (
    SELECT 
        cs.c_customer_id,
        cs.cd_gender,
        cs.total_purchases,
        cs.order_count,
        ROW_NUMBER() OVER (PARTITION BY cs.cd_gender ORDER BY cs.total_purchases DESC) AS rank
    FROM 
        customer_stats cs
)
SELECT 
    ss.web_site_id,
    ss.total_quantity,
    ss.total_sales,
    bc.c_customer_id,
    bc.cd_gender,
    bc.total_purchases,
    bc.order_count
FROM 
    sales_summary ss
JOIN 
    best_customers bc ON ss.web_site_id IN (
        SELECT DISTINCT ws.ws_web_site_sk 
        FROM web_sales ws 
        WHERE ws.ws_quantity > 5
    )
WHERE 
    bc.rank <= 10
ORDER BY 
    ss.total_sales DESC;
