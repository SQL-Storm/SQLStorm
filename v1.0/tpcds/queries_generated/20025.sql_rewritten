WITH SalesData AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_profit) AS total_net_profit,
        AVG(ws.ws_sales_price) AS avg_sales_price,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        DENSE_RANK() OVER (PARTITION BY ws.bill_cdemo_sk ORDER BY SUM(ws.ws_net_profit) DESC) AS sales_rank
    FROM web_sales ws
    JOIN customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    LEFT JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN store s ON ws.ws_store_sk = s.s_store_sk
    WHERE ws.ws_sales_price IS NOT NULL
      AND ws.ws_sold_date_sk BETWEEN 2450000 AND 2450599
      AND (cd.cd_gender = 'M' OR cd.cd_gender IS NULL)
    GROUP BY ws.ws_item_sk, ws.bill_cdemo_sk, ws.ws_web_site_sk
),
TopSales AS (
    SELECT 
        sd.ws_item_sk,
        sd.total_quantity,
        sd.total_net_profit,
        sd.avg_sales_price,
        sd.order_count
    FROM SalesData sd
    WHERE sd.sales_rank <= 10
)
SELECT 
    items.i_item_id,
    items.i_product_name,
    items.i_item_desc,
    COALESCE(ts.total_quantity, 0) AS total_quantity_sold,
    COALESCE(ts.total_net_profit, 0) AS total_net_profit,
    COALESCE(ts.avg_sales_price, 0) AS avg_sales_price
FROM item items
LEFT JOIN TopSales ts ON items.i_item_sk = ts.ws_item_sk
WHERE (items.i_current_price BETWEEN 5.00 AND 20.00)
  AND (items.i_item_desc LIKE '%gadget%' OR items.i_item_desc IS NULL)
ORDER BY total_net_profit DESC, total_quantity_sold DESC
LIMIT 25;