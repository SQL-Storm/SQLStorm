
WITH CustomerInfo AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
SalesData AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
    WHERE 
        ws.ws_sold_date_sk BETWEEN 20230101 AND 20231231
    GROUP BY 
        ws.web_site_id
),
FinalReport AS (
    SELECT 
        ci.full_name,
        ci.ca_city,
        ci.ca_state,
        ci.cd_gender,
        ci.cd_marital_status,
        sd.total_profit,
        sd.total_orders
    FROM 
        CustomerInfo ci
    JOIN 
        SalesData sd ON ci.c_customer_id = (
            SELECT web_customer_sk 
            FROM web_returns wr 
            WHERE wr.wr_returning_customer_sk = ci.c_customer_id 
            LIMIT 1
        )
)
SELECT 
    full_name,
    ca_city,
    ca_state,
    cd_gender,
    cd_marital_status,
    COALESCE(total_profit, 0) AS total_profit,
    COALESCE(total_orders, 0) AS total_orders
FROM 
    FinalReport
ORDER BY 
    total_profit DESC, full_name;
