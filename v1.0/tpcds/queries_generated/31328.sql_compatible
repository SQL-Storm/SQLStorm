
WITH RECURSIVE state_income AS (
    SELECT 
        hd_income_band_sk, 
        SUM(hd_dep_count) AS total_dependents 
    FROM household_demographics 
    GROUP BY hd_income_band_sk
), filtered_customers AS (
    SELECT 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        cd.cd_marital_status, 
        cd.cd_gender, 
        ca.ca_state,
        ROW_NUMBER() OVER (PARTITION BY ca.ca_state ORDER BY c.c_birth_year DESC) AS rn
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    WHERE ca.ca_state IS NOT NULL 
      AND cd.cd_marital_status = 'M'
),
sales_data AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_net_paid_inc_tax) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders
    FROM web_sales ws
    WHERE ws.ws_sold_date_sk = (SELECT MAX(ws_sold_date_sk) FROM web_sales)
    GROUP BY ws.ws_item_sk
),
combined_data AS (
    SELECT 
        fc.c_first_name, 
        fc.c_last_name, 
        fc.ca_state,
        COALESCE(sd.total_sales, 0) AS total_sales,
        COALESCE(sd.total_orders, 0) AS total_orders,
        si.total_dependents
    FROM filtered_customers fc
    LEFT JOIN sales_data sd ON fc.c_customer_sk = sd.ws_item_sk
    LEFT JOIN state_income si ON fc.ca_state = si.hd_income_band_sk
)

SELECT 
    ca.ca_state, 
    MAX(ca.total_sales) AS max_sales, 
    AVG(ca.total_orders) AS avg_orders,
    COUNT(*) AS customer_count,
    SUM(CASE WHEN ca.total_dependents IS NULL THEN 0 ELSE ca.total_dependents END) AS total_dependents
FROM combined_data ca
GROUP BY ca.ca_state
HAVING COUNT(*) > 10
ORDER BY max_sales DESC;
