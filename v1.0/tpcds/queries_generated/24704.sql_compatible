
WITH ranked_sales AS (
    SELECT 
        ws.web_site_sk,
        ws.ws_order_number,
        SUM(ws.ws_quantity) AS total_quantity,
        ROW_NUMBER() OVER (PARTITION BY ws.web_site_sk ORDER BY SUM(ws.ws_sales_price) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        i.i_current_price IS NOT NULL 
        AND ws.ws_sales_price > 0
    GROUP BY 
        ws.web_site_sk, ws.ws_order_number
), 
customer_info AS (
    SELECT 
        c.c_customer_sk,
        CASE 
            WHEN cd.cd_gender = 'F' THEN 'Female'
            WHEN cd.cd_gender = 'M' THEN 'Male'
            ELSE 'Unknown'
        END AS gender,
        cd.cd_marital_status,
        COALESCE(cd.cd_credit_rating, 'Not Rated') AS credit_rating,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
), 
sales_with_customers AS (
    SELECT 
        cs.web_site_sk,
        ci.full_name,
        ci.gender,
        SUM(cs.total_quantity) AS total_sales,
        MAX(cs.total_quantity) AS max_order_quantity
    FROM 
        ranked_sales cs
    JOIN 
        customer_info ci ON cs.web_site_sk = ci.c_customer_sk
    GROUP BY 
        cs.web_site_sk, ci.full_name, ci.gender
)
SELECT 
    swc.web_site_sk,
    swc.full_name,
    swc.gender,
    swc.total_sales,
    swc.max_order_quantity,
    CASE 
        WHEN swc.max_order_quantity > 10 THEN 'High Value'
        WHEN swc.total_sales > 1000 THEN 'Medium Value'
        ELSE 'Low Value'
    END AS value_category,
    COUNT(DISTINCT swc.full_name) OVER (PARTITION BY swc.web_site_sk) AS customer_count,
    ROUND(100.0 * SUM(swc.total_sales) OVER (PARTITION BY swc.web_site_sk) / NULLIF(SUM(swc.total_sales) OVER (), 0), 2) AS percentage_of_total_sales
FROM 
    sales_with_customers swc
LEFT JOIN 
    store s ON s.s_store_sk = swc.web_site_sk
WHERE 
    EXISTS (
        SELECT 1 
        FROM inventory inv 
        WHERE inv.inv_quantity_on_hand > 0 
        AND inv.inv_item_sk IN (
            SELECT ws.ws_item_sk 
            FROM web_sales ws 
            WHERE ws.ws_order_number = swc.web_site_sk
        )
    )
ORDER BY 
    swc.total_sales DESC
FETCH FIRST 50 ROWS ONLY;
