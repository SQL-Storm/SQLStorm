
WITH SalesSummary AS (
    SELECT
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        COALESCE(SUM(ws.ws_ext_sales_price), 0) AS total_web_sales,
        COALESCE(SUM(cs.cs_ext_sales_price), 0) AS total_catalog_sales,
        COALESCE(SUM(ss.ss_ext_sales_price), 0) AS total_store_sales,
        COUNT(DISTINCT ws.ws_order_number) AS web_order_count,
        COUNT(DISTINCT cs.cs_order_number) AS catalog_order_count,
        COUNT(DISTINCT ss.ss_ticket_number) AS store_order_count,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY COALESCE(SUM(ws.ws_ext_sales_price), 0) DESC) AS sales_rank
    FROM customer c
    LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN catalog_sales cs ON c.c_customer_sk = cs.cs_bill_customer_sk
    LEFT JOIN store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    WHERE c.c_birth_year IS NOT NULL AND c.c_birth_country IS NOT NULL
    GROUP BY c.c_customer_sk, c.c_first_name, c.c_last_name
),
TopCustomers AS (
    SELECT
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        total_web_sales,
        total_catalog_sales,
        total_store_sales,
        web_order_count,
        catalog_order_count,
        store_order_count
    FROM SalesSummary
    WHERE sales_rank <= 10
)
SELECT
    tc.c_first_name,
    tc.c_last_name,
    tc.total_web_sales,
    tc.total_catalog_sales,
    tc.total_store_sales,
    CASE 
        WHEN tc.total_web_sales > 0 THEN 'Web'
        WHEN tc.total_catalog_sales > 0 THEN 'Catalog'
        WHEN tc.total_store_sales > 0 THEN 'Store'
        ELSE 'No Sales'
    END AS primary_sales_channel,
    CASE 
        WHEN tc.total_web_sales = 0 THEN 'N/A'
        ELSE CONCAT('Total Sales: $', ROUND(tc.total_web_sales + tc.total_catalog_sales + tc.total_store_sales, 2))
    END AS sales_summary
FROM TopCustomers tc
ORDER BY tc.total_web_sales DESC;
