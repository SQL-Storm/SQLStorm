WITH customer_info AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.ca_city,
        ca.ca_state,
        c.c_email_address,
        c.c_birth_month,
        c.c_birth_day,
        c.c_birth_year,
        CONCAT(ca.ca_street_number, ' ', ca.ca_street_name, ' ', ca.ca_street_type) AS full_address
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
monthly_purchases AS (
    SELECT 
        EXTRACT(YEAR FROM d.d_date) AS purchase_year,
        EXTRACT(MONTH FROM d.d_date) AS purchase_month,
        COUNT(ws.ws_order_number) AS total_orders
    FROM web_sales ws
    JOIN date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY purchase_year, purchase_month
),
top_customers AS (
    SELECT 
        ci.full_name,
        ci.c_email_address,
        SUM(ws.ws_ext_sales_price) AS total_spent
    FROM customer_info ci
    JOIN web_sales ws ON ci.c_customer_id = ws.ws_bill_customer_sk
    GROUP BY ci.full_name, ci.c_email_address
    ORDER BY total_spent DESC
    LIMIT 10
)
SELECT 
    tc.full_name,
    tc.c_email_address,
    COALESCE(mp.purchase_year, 'N/A') AS purchase_year,
    COALESCE(mp.purchase_month, 'N/A') AS purchase_month,
    COALESCE(mp.total_orders, 0) AS total_orders,
    CONCAT('Born on ', tc.c_birth_month, '/', tc.c_birth_day, '/', tc.c_birth_year) AS birth_info,
    tc.full_address
FROM top_customers tc
LEFT JOIN monthly_purchases mp ON mp.purchase_year = EXTRACT(YEAR FROM cast('2002-10-01' as date)) AND mp.purchase_month = EXTRACT(MONTH FROM cast('2002-10-01' as date));