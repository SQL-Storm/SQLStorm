WITH RECURSIVE CustomerHierarchy AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        1 AS level
    FROM 
        customer c
    WHERE 
        c.c_customer_sk IS NOT NULL

    UNION ALL

    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        ch.level + 1
    FROM 
        customer c
    JOIN 
        CustomerHierarchy ch ON c.c_current_cdemo_sk = ch.c_customer_sk
),
SalesData AS (
    SELECT 
        ws.ws_sold_date_sk,
        SUM(ws.ws_sales_price) AS total_sales,
        AVG(ws.ws_net_profit) AS avg_net_profit
    FROM 
        web_sales ws
    WHERE 
        ws.ws_sold_date_sk > (
            SELECT 
                MAX(d.d_date_sk)
            FROM 
                date_dim d
            WHERE 
                d.d_year = 2001
        )
    GROUP BY 
        ws.ws_sold_date_sk
),
CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        COUNT(c.c_customer_sk) AS customer_count
    FROM 
        customer_demographics cd 
    LEFT JOIN 
        customer c ON cd.cd_demo_sk = c.c_current_cdemo_sk
    GROUP BY 
        cd.cd_demo_sk, cd.cd_gender
)
SELECT 
    ch.c_first_name,
    ch.c_last_name,
    cd.customer_count,
    sd.total_sales,
    sd.avg_net_profit
FROM 
    CustomerHierarchy ch
LEFT JOIN 
    CustomerDemographics cd ON cd.cd_demo_sk = ch.c_customer_sk
LEFT JOIN 
    SalesData sd ON sd.ws_sold_date_sk = (
        SELECT 
            MAX(ws_sold_date_sk)
        FROM 
            web_sales
        WHERE 
            ws_sold_date_sk <= cast('2002-10-01' as date)
    )
WHERE 
    cd.customer_count IS NOT NULL
ORDER BY 
    sd.total_sales DESC
LIMIT 10;