WITH ranked_sales AS (
    SELECT
        cs.bill_customer_sk,
        cs.cs_item_sk,
        SUM(cs.cs_quantity) AS total_quantity,
        SUM(cs.cs_net_profit) AS total_net_profit,
        DENSE_RANK() OVER (PARTITION BY cs.bill_customer_sk ORDER BY SUM(cs.cs_net_profit) DESC) AS profit_rank
    FROM
        catalog_sales cs
    WHERE
        cs.cs_sold_date_sk BETWEEN 10000 AND 20000
    GROUP BY
        cs.bill_customer_sk, cs.cs_item_sk
),
customer_details AS (
    SELECT
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band_sk
    FROM
        customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
item_details AS (
    SELECT
        i.i_item_sk,
        i.i_item_desc,
        i.i_current_price,
        i.i_brand
    FROM
        item i
    WHERE
        i.i_rec_start_date <= cast('2002-10-01' as date) AND (i.i_rec_end_date IS NULL OR i.i_rec_end_date > cast('2002-10-01' as date))
),
combined_sales AS (
    SELECT
        cd.c_customer_id,
        cd.c_first_name,
        cd.c_last_name,
        cs.total_quantity,
        cs.total_net_profit,
        it.i_item_desc,
        it.i_current_price,
        it.i_brand
    FROM
        ranked_sales cs
    JOIN customer_details cd ON cs.bill_customer_sk = cd.c_customer_id
    JOIN item_details it ON cs.cs_item_sk = it.i_item_sk
    WHERE
        cs.profit_rank <= 5
)
SELECT
    c.customer_name,
    SUM(cs.total_quantity) AS total_quantity_sold,
    SUM(cs.total_net_profit) AS total_net_profit,
    AVG(cs.total_net_profit) AS avg_net_profit,
    STRING_AGG(CONCAT(it.i_item_desc, ' (', it.i_brand, ')')) AS item_descriptions
FROM
    combined_sales cs
JOIN (
    SELECT 
        DISTINCT c_first_name || ' ' || c_last_name AS customer_name
    FROM 
        customer_details
) c ON c.customer_name = CONCAT(cs.c_first_name, ' ', cs.c_last_name)
GROUP BY
    c.customer_name
ORDER BY
    total_net_profit DESC
LIMIT 10;