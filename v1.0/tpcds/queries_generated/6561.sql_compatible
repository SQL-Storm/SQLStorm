
WITH ranked_customers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        DENSE_RANK() OVER(PARTITION BY cd.cd_gender ORDER BY SUM(ws.ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        customer AS c
    JOIN 
        customer_demographics AS cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        web_sales AS ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        cd.cd_marital_status = 'W'
        AND cd.cd_purchase_estimate > 50000
    GROUP BY 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        cd.cd_gender, 
        cd.cd_marital_status, 
        cd.cd_education_status, 
        cd.cd_purchase_estimate, 
        cd.cd_credit_rating
),
top_customers AS (
    SELECT 
        c_customer_sk AS customer_sk,
        c_first_name,
        c_last_name,
        total_sales
    FROM 
        ranked_customers
    WHERE 
        sales_rank <= 5
),
sales_summary AS (
    SELECT 
        w.w_warehouse_id,
        COUNT(*) AS num_customers,
        SUM(tc.total_sales) AS total_sales_value
    FROM 
        top_customers AS tc
    JOIN 
        store_sales AS ss ON tc.customer_sk = ss.ss_customer_sk
    JOIN 
        warehouse AS w ON ss.ss_store_sk = w.w_warehouse_sk
    GROUP BY 
        w.w_warehouse_id
)
SELECT 
    ws.web_site_id,
    COUNT(ws.ws_order_number) AS order_count,
    SUM(ws.ws_net_paid) AS total_net_paid,
    AVG(ss.total_sales_value) AS average_sales_per_customer
FROM 
    web_sales AS ws
JOIN 
    sales_summary AS ss ON ws.ws_web_site_sk = ss.w_warehouse_id
WHERE 
    ws.ws_sold_date_sk >= (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2023) - 30
GROUP BY 
    ws.web_site_id
ORDER BY 
    total_net_paid DESC;
