WITH RECURSIVE CTE_HIERARCHY AS (
    SELECT
        s_store_sk,
        s_store_name,
        s_number_employees,
        s_floor_space,
        s_city,
        s_state,
        1 AS hierarchy_level
    FROM
        store
    WHERE
        s_state = 'CA'
    
    UNION ALL
    
    SELECT
        s.store_sk,
        s.s_store_name,
        s.s_number_employees,
        s.s_floor_space,
        s.s_city,
        s.s_state,
        ch.hierarchy_level + 1
    FROM
        store s
    JOIN
        CTE_HIERARCHY ch ON s.s_store_sk = ch.s_store_sk + 1  
)

SELECT
    ca.ca_city,
    COUNT(DISTINCT c.c_customer_id) AS unique_customers,
    SUM(ws.ws_net_profit) AS total_net_profit,
    AVG(i.i_current_price) AS avg_item_price,
    MAX(i.i_total_sales) AS max_item_sales,
    MIN(i.i_total_sales) AS min_item_sales
FROM
    customer c
LEFT JOIN
    customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
LEFT JOIN
    web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
LEFT JOIN
    item i ON ws.ws_item_sk = i.i_item_sk
WHERE
    ca.ca_city IS NOT NULL
    AND (ca.ca_state = 'CA' OR ca.ca_state = 'NY')
    AND ws.ws_sold_date_sk BETWEEN 20200101 AND 20201231
    AND i.i_current_price > (
        SELECT
            AVG(i_sub.i_current_price)
        FROM
            item i_sub
        WHERE
            i_sub.i_item_sk IN (
                SELECT 
                    ws_sub.ws_item_sk
                FROM 
                    web_sales ws_sub
                WHERE 
                    ws_sub.ws_sold_date_sk = ws.ws_sold_date_sk
            )
    )
GROUP BY
    ca.ca_city
HAVING
    COUNT(DISTINCT c.c_customer_id) > 10
ORDER BY
    total_net_profit DESC
LIMIT 10;