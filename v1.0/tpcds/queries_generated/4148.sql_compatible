
WITH ranked_sales AS (
    SELECT 
        ws.web_site_sk,
        ws.web_sales_price,
        ws.ws_sold_date_sk,
        RANK() OVER (PARTITION BY ws.web_site_sk ORDER BY ws.ws_quantity DESC) AS sales_rank
    FROM web_sales ws
    WHERE ws.ws_sold_date_sk BETWEEN (SELECT MIN(d_date_sk) FROM date_dim WHERE d_year = 2023) 
                                  AND (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2023)
),
customer_sales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_sales_price) AS total_sales
    FROM customer c
    JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY c.c_customer_sk, c.c_first_name, c.c_last_name
),
high_value_customers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        total_sales,
        CD.cd_credit_rating
    FROM customer_sales c
    JOIN customer_demographics CD ON c.c_customer_sk = CD.cd_demo_sk
    WHERE total_sales > 1000
)
SELECT 
    hvc.c_first_name,
    hvc.c_last_name,
    hvc.total_sales,
    SUM(r.web_sales_price) AS rank_sales_total,
    CASE 
        WHEN hvc.cd_credit_rating IS NULL THEN 'Unknown'
        ELSE hvc.cd_credit_rating
    END AS credit_rating,
    DENSE_RANK() OVER (ORDER BY hvc.total_sales DESC) AS sales_rank
FROM high_value_customers hvc
LEFT JOIN ranked_sales r ON hvc.c_customer_sk = r.web_site_sk
GROUP BY hvc.c_first_name, hvc.c_last_name, hvc.total_sales, hvc.cd_credit_rating
HAVING hvc.total_sales > 1500 OR COUNT(r.sales_rank) > 0
ORDER BY hvc.total_sales DESC
LIMIT 10;
