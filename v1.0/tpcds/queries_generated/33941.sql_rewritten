WITH RECURSIVE SalesData AS (
    SELECT ws.item_sk, 
           SUM(ws.ext_sales_price) AS total_sales, 
           COUNT(ws.order_number) AS order_count, 
           ROW_NUMBER() OVER (PARTITION BY ws.item_sk ORDER BY SUM(ws.ext_sales_price) DESC) AS rank
    FROM web_sales ws
    JOIN date_dim dd ON ws.sold_date_sk = dd.d_date_sk
    WHERE dd.d_year = 2001
    GROUP BY ws.item_sk
), 
CustomerDemographics AS (
    SELECT cd.cd_demo_sk, 
           cd.cd_gender, 
           cd.cd_marital_status,
           cd.cd_education_status,
           COALESCE(hd.hd_income_band_sk, -1) AS income_band,
           COUNT(DISTINCT c.c_customer_sk) AS total_customers
    FROM customer c
    LEFT JOIN customer_demographics cd ON c.current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
    GROUP BY cd.cd_demo_sk, cd.cd_gender, cd.cd_marital_status, cd.cd_education_status
), 
FilteredSales AS (
    SELECT sd.item_sk, 
           sd.total_sales, 
           cd.gender, 
           cd.marital_status, 
           cd.education_status
    FROM SalesData sd
    JOIN CustomerDemographics cd ON sd.rank <= 10 
)
SELECT fs.item_sk, 
       fs.total_sales, 
       fs.gender, 
       fs.marital_status, 
       fs.education_status
FROM FilteredSales fs
ORDER BY fs.total_sales DESC
LIMIT 20;