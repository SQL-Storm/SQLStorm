
WITH SalesData AS (
    SELECT 
        ws.ws_sold_date_sk,
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_paid_inc_tax) AS total_sales,
        d.d_year,
        d.d_month_seq,
        d.d_quarter_seq,
        d.d_week_seq
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year BETWEEN 2020 AND 2023
    GROUP BY 
        ws.ws_sold_date_sk, 
        ws.ws_item_sk, 
        d.d_year, 
        d.d_month_seq, 
        d.d_quarter_seq, 
        d.d_week_seq
),
TopItems AS (
    SELECT 
        item.i_item_sk,
        item.i_item_id,
        SUM(sd.total_quantity) AS total_quantity_sold,
        SUM(sd.total_sales) AS total_sales
    FROM 
        SalesData sd
    JOIN 
        item ON sd.ws_item_sk = item.i_item_sk
    GROUP BY 
        item.i_item_sk, 
        item.i_item_id
    ORDER BY 
        total_sales DESC
    LIMIT 100
)
SELECT 
    item.i_item_id,
    item.i_item_desc,
    ti.total_quantity_sold,
    ti.total_sales,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.cd_income_band_sk,
    hd.hd_buy_potential
FROM 
    TopItems ti
JOIN 
    customer c ON c.c_customer_sk = (SELECT MIN(cus.c_customer_sk) FROM customer cus)
JOIN 
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
LEFT JOIN 
    household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
WHERE 
    ti.total_sales > 1000
ORDER BY 
    ti.total_sales DESC;
