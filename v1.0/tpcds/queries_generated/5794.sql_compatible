
WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        COUNT(ss.ticket_number) AS total_sales,
        SUM(ss.net_paid_inc_tax) AS total_revenue
    FROM 
        customer c
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY 
        c.c_customer_sk
), 
DemographicStats AS (
    SELECT 
        cd.cd_gender,
        cd.cd_marital_status,
        COUNT(cs.c_customer_sk) AS customer_count,
        SUM(cs.total_sales) AS total_sales,
        SUM(cs.total_revenue) AS total_revenue
    FROM 
        CustomerSales cs
    JOIN 
        customer_demographics cd ON cs.c_customer_sk = cd.cd_demo_sk
    GROUP BY 
        cd.cd_gender, cd.cd_marital_status
),
SalesPerformance AS (
    SELECT 
        d.d_year,
        SUM(ds.total_sales) AS yearly_sales,
        SUM(ds.total_revenue) AS yearly_revenue
    FROM 
        DemographicStats ds 
    JOIN 
        date_dim d ON d.d_date_sk = (
            SELECT 
                ss.ss_sold_date_sk 
            FROM 
                store_sales ss 
            WHERE 
                ss.ss_customer_sk IN (SELECT cs.c_customer_sk FROM CustomerSales cs)
            ORDER BY 
                ss.ss_sold_date_sk 
            FETCH FIRST 1 ROW ONLY
        )
    GROUP BY 
        d.d_year
)
SELECT 
    dp.cd_gender,
    dp.cd_marital_status,
    sp.yearly_sales,
    sp.yearly_revenue
FROM 
    DemographicStats dp
JOIN 
    SalesPerformance sp ON dp.customer_count > 0
ORDER BY 
    sp.yearly_revenue DESC, 
    dp.cd_gender, 
    dp.cd_marital_status;
