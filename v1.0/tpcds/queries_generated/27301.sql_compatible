
WITH RankedCustomers AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_gender ORDER BY c.c_first_name) AS rn
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
AddressDetails AS (
    SELECT 
        ca.ca_address_id,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country,
        ca.ca_street_name,
        ca.ca_street_number,
        CONCAT(ca.ca_street_number, ' ', ca.ca_street_name, ', ', ca.ca_city, ', ', ca.ca_state) AS full_address
    FROM 
        customer_address ca
),
SalesSummary AS (
    SELECT 
        ws.ws_bill_customer_sk,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_bill_customer_sk
)
SELECT 
    rc.c_customer_id,
    rc.c_first_name,
    rc.c_last_name,
    rc.cd_gender,
    rc.cd_marital_status,
    rc.cd_education_status,
    ad.full_address,
    ss.total_sales,
    ss.total_orders
FROM 
    RankedCustomers rc
LEFT JOIN 
    AddressDetails ad ON rc.c_customer_id = ad.ca_address_id
LEFT JOIN 
    SalesSummary ss ON rc.c_customer_id = ss.ws_bill_customer_sk
WHERE 
    ss.total_sales > 1000 OR ss.total_sales IS NULL
ORDER BY 
    rc.cd_gender, 
    rc.c_last_name, 
    rc.c_first_name;
