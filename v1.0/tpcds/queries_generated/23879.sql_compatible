
WITH sales_summary AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_sales_price) AS total_sales_price,
        COUNT(DISTINCT ws_order_number) AS order_count
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk > (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2022)
    GROUP BY 
        ws_bill_customer_sk
),
customer_analysis AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name, 
        c.c_last_name, 
        cd.cd_gender,
        cd.cd_marital_status,
        sd.total_sales_price,
        sd.order_count,
        (SELECT COUNT(*) 
         FROM store_sales ss 
         WHERE ss.ss_customer_sk = c.c_customer_sk) AS store_order_count,
        COALESCE((SELECT AVG(ws_ext_discount_amt) 
                  FROM web_sales
                  WHERE ws_bill_customer_sk = c.c_customer_sk), 0) AS avg_web_discount
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        sales_summary sd ON c.c_customer_sk = sd.ws_bill_customer_sk
),
final_report AS (
    SELECT 
        ca.ca_city,
        ca.ca_state,
        ca.ca_country,
        COUNT(DISTINCT ca.ca_address_sk) AS address_count,
        AVG(COALESCE(sd.total_sales_price, 0)) AS avg_sales,
        SUM(CASE WHEN sd.order_count IS NULL THEN 0 ELSE sd.order_count END) AS total_orders,
        SUM(CASE WHEN sd.total_sales_price IS NULL THEN 0 ELSE sd.total_sales_price END) AS total_revenue,
        COUNT(c.c_customer_sk) FILTER (WHERE cd.cd_gender = 'F') AS female_customers,
        COUNT(c.c_customer_sk) FILTER (WHERE cd.cd_gender = 'M') AS male_customers
    FROM 
        customer_address ca
    FULL OUTER JOIN 
        customer_analysis c ON ca.ca_address_sk = c.c_customer_sk
    GROUP BY 
        ca.ca_city, ca.ca_state, ca.ca_country
),
raw_data AS (
    SELECT 
        d.d_date_id,
        SUM(ws.net_profit) AS total_net_profit
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON d.d_date_sk = ws.ws_sold_date_sk
    WHERE 
        ws.ws_sold_date_sk BETWEEN (SELECT MIN(d_date_sk) FROM date_dim) AND (SELECT MAX(d_date_sk) FROM date_dim)
    GROUP BY 
        d.d_date_id
),
profit_analysis AS (
    SELECT 
        d.d_day_name,
        SUM(COALESCE(r.total_net_profit, 0)) AS consolidated_profits
    FROM 
        raw_data r
    JOIN 
        date_dim d ON r.d_date_id = d.d_date_id
    GROUP BY 
        d.d_day_name
)
SELECT 
    fr.ca_city,
    fr.ca_state,
    fr.ca_country,
    fr.address_count,
    fr.avg_sales,
    fr.total_orders,
    fr.total_revenue,
    pa.d_day_name,
    pa.consolidated_profits
FROM 
    final_report fr
LEFT JOIN 
    profit_analysis pa ON fr.ca_city IS NOT NULL
WHERE 
    fr.avg_sales > (SELECT AVG(avg_sales) FROM final_report)
ORDER BY 
    fr.total_revenue DESC, pa.consolidated_profits DESC;
