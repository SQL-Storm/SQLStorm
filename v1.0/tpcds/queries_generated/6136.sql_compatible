
WITH sales_summary AS (
    SELECT 
        c.c_customer_sk,
        c.c_gender,
        c.c_current_addr_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        AVG(ws.ws_net_paid) AS avg_order_value
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        cd.cd_gender = 'F' 
        AND cd.cd_marital_status = 'M'
    GROUP BY 
        c.c_customer_sk, c.c_gender, c.c_current_addr_sk
),
address_summary AS (
    SELECT 
        ca.ca_country,
        COUNT(*) AS customer_count,
        SUM(ss.total_sales) AS total_sales,
        AVG(ss.total_quantity) AS avg_quantity_per_customer
    FROM 
        customer_address ca
    JOIN 
        sales_summary ss ON ca.ca_address_sk = ss.c_current_addr_sk
    GROUP BY 
        ca.ca_country
)
SELECT 
    ca_country AS country,
    customer_count,
    total_sales,
    avg_quantity_per_customer,
    total_sales / NULLIF(customer_count, 0) AS avg_sales_per_customer,
    RANK() OVER (ORDER BY total_sales DESC) AS sales_rank
FROM 
    address_summary
ORDER BY 
    total_sales DESC
LIMIT 10;
