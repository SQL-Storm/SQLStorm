
WITH RECURSIVE sales_hierarchy AS (
    SELECT
        ss_store_sk,
        SUM(ss_net_profit) AS total_profit,
        1 AS level
    FROM
        store_sales
    GROUP BY
        ss_store_sk
    UNION ALL
    SELECT
        sh.ss_store_sk,
        SUM(ss.total_profit) AS total_profit,
        sh.level + 1
    FROM
        sales_hierarchy sh
    JOIN (
        SELECT
            ss_store_sk,
            SUM(ss_net_profit) AS total_profit
        FROM
            store_sales
        GROUP BY
            ss_store_sk
    ) AS ss ON ss.ss_store_sk < sh.ss_store_sk
    GROUP BY
        sh.ss_store_sk, sh.level
),
address_summary AS (
    SELECT
        ca_county,
        COUNT(DISTINCT c_customer_sk) AS customer_count,
        AVG(cd_dep_count) AS avg_dependent_count
    FROM
        customer_address ca
    JOIN
        customer c ON ca.ca_address_sk = c.c_current_addr_sk
    JOIN
        customer_demographics cd ON cd.cd_demo_sk = c.c_current_cdemo_sk
    GROUP BY
        ca_county
),
highest_profit AS (
    SELECT 
        ss_store_sk,
        total_profit,
        ROW_NUMBER() OVER (ORDER BY total_profit DESC) AS rn
    FROM 
        sales_hierarchy
)
SELECT 
    a.ca_state,
    COUNT(DISTINCT c.c_customer_id) AS active_customers,
    COALESCE(sa.avg_dependent_count, 0) AS average_dependencies,
    COALESCE(hp.total_profit, 0) AS highest_store_profit
FROM 
    customer c
LEFT JOIN 
    customer_address a ON c.c_current_addr_sk = a.ca_address_sk
LEFT JOIN 
    address_summary sa ON a.ca_county = sa.ca_county
LEFT JOIN 
    highest_profit hp ON hp.ss_store_sk = c.c_current_addr_sk
WHERE 
    c.c_current_hdemo_sk IS NOT NULL 
    AND (sa.customer_count > 10 OR a.ca_state IS NULL) 
GROUP BY 
    a.ca_state, sa.avg_dependent_count, hp.total_profit
HAVING 
    COUNT(DISTINCT c.c_customer_id) > 5
ORDER BY 
    average_dependencies DESC
FETCH FIRST 10 ROWS ONLY;
