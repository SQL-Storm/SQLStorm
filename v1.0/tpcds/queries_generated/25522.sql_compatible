
WITH CustomerInfo AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate
    FROM customer c
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
SalesData AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_sales_price,
        ws.ws_net_profit,
        CONCAT(DATE_FORMAT(d.d_date, '%Y-%m-%d'), ' ', DATE_FORMAT(t.t_hour, '%H:%i:%s')) AS sales_datetime,
        ci.full_name,
        ci.ca_city,
        ci.ca_state,
        ci.cd_gender,
        ci.cd_marital_status
    FROM web_sales ws
    JOIN date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    JOIN time_dim t ON ws.ws_sold_time_sk = t.t_time_sk
    JOIN CustomerInfo ci ON ws.ws_bill_customer_sk = ci.c_customer_id
)
SELECT 
    ca_state,
    cd_gender,
    COUNT(DISTINCT ws_order_number) AS total_orders,
    SUM(ws_sales_price) AS total_sales,
    AVG(ws_net_profit) AS average_profit
FROM SalesData
GROUP BY ca_state, cd_gender
ORDER BY total_sales DESC, total_orders DESC;
