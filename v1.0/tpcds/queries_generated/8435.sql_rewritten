WITH customer_info AS (
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, 
           cd.cd_marital_status, cd.cd_income_band_sk, cd.cd_purchase_estimate,
           hd.hd_buy_potential, hd.hd_dep_count, hd.hd_vehicle_count
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
    WHERE c.c_birth_year BETWEEN 1980 AND 1990
),
sales_summary AS (
    SELECT ws_bill_customer_sk, SUM(ws_ext_sales_price) AS total_sales, COUNT(ws_order_number) AS total_orders
    FROM web_sales
    WHERE ws_sold_date_sk BETWEEN 2459580 AND 2459587  
    GROUP BY ws_bill_customer_sk
),
top_customers AS (
    SELECT ci.c_customer_sk, ci.c_first_name, ci.c_last_name, ss.total_sales, ss.total_orders
    FROM customer_info ci
    JOIN sales_summary ss ON ci.c_customer_sk = ss.ws_bill_customer_sk
    ORDER BY ss.total_sales DESC
    LIMIT 10
)
SELECT tc.c_first_name, tc.c_last_name, tc.total_sales, tc.total_orders, 
       CONCAT('Gender: ', ci.cd_gender, ', Marital Status: ', ci.cd_marital_status, 
              ', Income Band: ', ci.cd_income_band_sk, ', Buy Potential: ', ci.hd_buy_potential) AS customer_details
FROM top_customers tc
JOIN customer_info ci ON tc.c_customer_sk = ci.c_customer_sk;