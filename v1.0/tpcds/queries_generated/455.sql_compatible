
WITH sales_summary AS (
    SELECT
        ws.web_site_sk,
        ws.ws_sold_date_sk,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        AVG(ws.ws_sales_price) AS avg_sales_price,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM
        web_sales ws
    JOIN
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE
        dd.d_year = 2022
    GROUP BY
        ws.web_site_sk, ws.ws_sold_date_sk
),
demographics_summary AS (
    SELECT
        cd.cd_demo_sk,
        COUNT(c.c_customer_sk) AS customer_count,
        AVG(cd.cd_purchase_estimate) AS avg_purchase_estimate,
        MAX(cd.cd_dep_count) AS max_dependents
    FROM
        customer c
    JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE
        cd.cd_gender = 'F' AND
        cd.cd_marital_status = 'M'
    GROUP BY
        cd.cd_demo_sk
),
returns_summary AS (
    SELECT
        sr.sr_item_sk,
        SUM(sr.sr_return_quantity) AS total_returns,
        SUM(sr.sr_return_amt) AS total_returned_amt,
        COUNT(sr.sr_ticket_number) AS return_count
    FROM
        store_returns sr
    GROUP BY
        sr.sr_item_sk
)
SELECT
    ss.web_site_sk,
    ds.cd_demo_sk,
    ds.customer_count,
    ss.total_sales,
    ss.avg_sales_price,
    COALESCE(rs.total_returns, 0) AS total_returns,
    COALESCE(rs.total_returned_amt, 0) AS total_returned_amt
FROM
    sales_summary ss
LEFT JOIN 
    demographics_summary ds ON ss.web_site_sk = ds.cd_demo_sk
LEFT JOIN
    returns_summary rs ON ss.web_site_sk = rs.sr_item_sk
WHERE
    ss.total_sales > 10000
ORDER BY
    ss.total_sales DESC, 
    ds.customer_count 
FETCH FIRST 100 ROWS ONLY;
