
WITH ranked_sales AS (
    SELECT 
        ws.ws_item_sk,
        ws.ws_order_number,
        ws.ws_sales_price,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_sales_price DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        i.i_current_price IS NOT NULL
),
total_sales_by_item AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_ext_sales_price) AS total_sales
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_item_sk
),
promotion_stats AS (
    SELECT 
        p.p_promo_sk,
        COUNT(ws.ws_order_number) AS promo_sales_count,
        SUM(ws.ws_ext_sales_price) AS promo_total_sales
    FROM 
        promotion p
    LEFT JOIN 
        web_sales ws ON p.p_promo_sk = ws.ws_promo_sk
    GROUP BY 
        p.p_promo_sk
)
SELECT 
    ca.ca_city,
    COUNT(DISTINCT c.c_customer_sk) AS customer_count,
    AVG(total_sales.total_sales) AS avg_sales,
    SUM(COALESCE(promo_counts.promo_sales_count, 0)) AS total_promo_usage,
    MAX(ranked_sales.sales_rank) AS highest_sales_rank
FROM 
    customer c
JOIN 
    customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
LEFT JOIN 
    total_sales_by_item total_sales ON total_sales.ws_item_sk IN (SELECT ws_item_sk FROM ranked_sales WHERE sales_rank = 1)
LEFT JOIN 
    promotion_stats promo_counts ON promo_counts.promo_total_sales > 1000
GROUP BY 
    ca.ca_city,
    total_sales.total_sales
HAVING 
    COUNT(DISTINCT c.c_customer_sk) > 5
ORDER BY 
    avg_sales DESC;
