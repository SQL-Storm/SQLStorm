
WITH RankedCustomerSales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_paid) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_id ORDER BY SUM(ws.ws_net_paid) DESC) AS sales_rank
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        ws.ws_sold_date_sk IN (
            SELECT d.d_date_sk 
            FROM date_dim d 
            WHERE d.d_year = 2023 AND d.d_moy = 12
        )
    GROUP BY 
        c.c_customer_id
),
BestCustomers AS (
    SELECT 
        c.c_customer_id,
        cs.total_sales,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band_price
    FROM 
        RankedCustomerSales cs
    JOIN 
        customer c ON cs.c_customer_id = c.c_customer_id
    JOIN 
        customer_demographics cd ON cd.cd_demo_sk = c.c_current_cdemo_sk
    WHERE 
        cs.sales_rank <= 10
)
SELECT 
    bc.c_customer_id,
    bc.total_sales,
    bc.cd_gender,
    bc.cd_marital_status,
    ib.ib_upper_bound AS income_bracket
FROM 
    BestCustomers bc
JOIN 
    household_demographics hd ON hd.hd_demo_sk = bc.c_current_hdemo_sk
JOIN 
    income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
ORDER BY 
    bc.total_sales DESC;
