
WITH CustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country,
        (SELECT COUNT(*) FROM household_demographics hd WHERE hd.hd_demo_sk = c.c_current_hdemo_sk) AS household_members
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
SalesInfo AS (
    SELECT 
        ws.ws_ship_date_sk,
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_sales,
        SUM(ws.ws_net_paid) AS total_revenue
    FROM web_sales ws
    GROUP BY ws.ws_ship_date_sk, ws.ws_item_sk
),
DetailedSales AS (
    SELECT 
        ci.full_name,
        ci.ca_city,
        ci.ca_state,
        si.total_sales,
        si.total_revenue,
        (SELECT COUNT(*) FROM store s WHERE s.s_city = ci.ca_city AND s.s_state = ci.ca_state) AS store_count
    FROM CustomerInfo ci
    JOIN SalesInfo si ON si.ws_item_sk IN (SELECT i.i_item_sk FROM item i WHERE i.i_brand = 'BrandA')
)
SELECT 
    ds.full_name,
    ds.ca_city,
    ds.ca_state,
    ds.total_sales,
    ds.total_revenue,
    ds.store_count,
    LENGTH(ds.full_name) AS name_length,
    UPPER(ds.ca_city) AS city_upper,
    CONCAT(ds.ca_state, ', ', ds.ca_country) AS location,
    ROUND(ds.total_revenue / NULLIF(ds.total_sales, 0), 2) AS avg_revenue_per_sale
FROM DetailedSales ds
WHERE ds.total_revenue > 1000
ORDER BY ds.total_sales DESC
LIMIT 50;
