
WITH RECURSIVE ranked_sales AS (
    SELECT
        ws_item_sk,
        ws_order_number,
        ws_net_profit,
        RANK() OVER (PARTITION BY ws_item_sk ORDER BY ws_net_profit DESC) AS rank_profit
    FROM
        web_sales
),
total_sales AS (
    SELECT
        ws_item_sk,
        SUM(ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws_order_number) AS order_count
    FROM
        web_sales
    WHERE
        ws_sold_date_sk BETWEEN 2458849 AND 2458914 
    GROUP BY
        ws_item_sk
)
SELECT
    ca.ca_city,
    SUM(CASE
        WHEN rs.rank_profit = 1 THEN rs.ws_net_profit ELSE 0 END) AS highest_profit,
    SUM(ts.total_profit) AS total_profit,
    COUNT(ts.order_count) AS distinct_orders,
    COALESCE(SUM(ts.total_profit) / NULLIF(SUM(ts.order_count), 0), 0) AS avg_profit_per_order
FROM
    customer_address ca
LEFT JOIN ranked_sales rs ON ca.ca_address_sk = (SELECT c_current_addr_sk FROM customer WHERE c_customer_sk = rs.ws_customer_sk)
LEFT JOIN total_sales ts ON ts.ws_item_sk = rs.ws_item_sk
WHERE
    ca.ca_state = 'CA' AND
    EXISTS (SELECT 1 FROM customer c WHERE c.c_current_addr_sk = ca.ca_address_sk AND c.c_birth_year = 1985)
GROUP BY
    ca.ca_city
HAVING
    SUM(ts.total_profit) > 1000
ORDER BY
    highest_profit DESC;
