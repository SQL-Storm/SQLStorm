
WITH customer_info AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS customer_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
formatted_dates AS (
    SELECT 
        d.d_date_sk,
        FORMAT(d.d_date, 'YYYY-MM-DD') AS formatted_date,
        d.d_day_name,
        d.d_month_seq,
        d.d_year
    FROM date_dim d
),
item_info AS (
    SELECT 
        i.i_item_sk,
        SUBSTRING(i.i_item_desc FROM 1 FOR 30) AS item_short_desc,
        i.i_current_price,
        i.i_brand,
        i.i_category
    FROM item i
),
web_sales_summary AS (
    SELECT 
        ws.ws_bill_customer_sk,
        SUM(ws.ws_quantity) AS total_items_sold,
        SUM(ws.ws_net_profit) AS total_net_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM web_sales ws
    GROUP BY ws.ws_bill_customer_sk
)

SELECT 
    ci.customer_name,
    ci.ca_city,
    ci.ca_state,
    ci.cd_gender,
    ci.cd_marital_status,
    ci.cd_education_status,
    ci.cd_purchase_estimate,
    ci.cd_credit_rating,
    fd.formatted_date,
    fi.item_short_desc,
    fi.i_current_price,
    ws.total_items_sold,
    ws.total_net_profit,
    ws.total_orders
FROM customer_info ci
JOIN formatted_dates fd ON ci.c_customer_sk = fd.d_date_sk
JOIN item_info fi ON ci.c_customer_sk = fi.i_item_sk  
LEFT JOIN web_sales_summary ws ON ci.c_customer_sk = ws.ws_bill_customer_sk
WHERE ci.cd_purchase_estimate > 1000
ORDER BY ws.total_net_profit DESC, ci.customer_name ASC
LIMIT 50;
