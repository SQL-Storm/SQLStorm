WITH top_customers AS (
    SELECT 
        c.c_customer_id, 
        c.c_first_name, 
        c.c_last_name, 
        SUM(ws.ws_net_paid) AS total_spent
    FROM 
        customer c
    INNER JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name
    ORDER BY 
        total_spent DESC
    LIMIT 10
), 
sales_data AS (
    SELECT 
        d.d_year,
        d.d_month_seq,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_paid) AS total_revenue
    FROM 
        web_sales ws
    INNER JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY 
        d.d_year, d.d_month_seq
), 
inventory_summary AS (
    SELECT 
        i.i_item_id, 
        i.i_product_name, 
        SUM(inv.inv_quantity_on_hand) AS total_inventory
    FROM 
        inventory inv
    INNER JOIN 
        item i ON inv.inv_item_sk = i.i_item_sk
    GROUP BY 
        i.i_item_id, i.i_product_name
)
SELECT 
    tc.c_customer_id, 
    tc.c_first_name, 
    tc.c_last_name, 
    sd.d_year, 
    sd.d_month_seq, 
    sd.total_quantity, 
    sd.total_revenue, 
    is.total_inventory
FROM 
    top_customers tc
LEFT JOIN 
    sales_data sd ON sd.d_year = EXTRACT(YEAR FROM cast('2002-10-01' as date)) AND sd.d_month_seq = EXTRACT(MONTH FROM cast('2002-10-01' as date))
LEFT JOIN 
    inventory_summary is ON is.i_item_id IN (
        SELECT ws.ws_item_sk 
        FROM web_sales ws 
        WHERE ws.ws_bill_customer_sk = tc.c_customer_id
    )
ORDER BY 
    total_revenue DESC, 
    total_inventory DESC;