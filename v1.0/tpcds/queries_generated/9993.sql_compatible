
WITH SalesData AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_net_profit) AS total_net_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        AVG(ws.ws_net_paid_inc_tax) AS average_order_value,
        COUNT(DISTINCT w.w_warehouse_id) AS distinct_warehouses
    FROM 
        web_sales ws
    JOIN 
        web_site w ON ws.ws_web_site_sk = w.web_site_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2000
    GROUP BY 
        ws.web_site_id
),
CustomerData AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        COUNT(DISTINCT c.c_customer_sk) AS total_customers,
        SUM(cd.cd_purchase_estimate) AS total_purchase_estimate
    FROM 
        customer_demographics cd
    JOIN 
        customer c ON cd.cd_demo_sk = c.c_current_cdemo_sk
    GROUP BY 
        cd.cd_demo_sk, cd.cd_gender, cd.cd_marital_status
)
SELECT 
    sd.web_site_id,
    sd.total_net_profit,
    sd.total_orders,
    sd.average_order_value,
    sd.distinct_warehouses,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.total_customers,
    cd.total_purchase_estimate
FROM 
    SalesData sd
LEFT JOIN 
    CustomerData cd ON sd.total_orders > 100
ORDER BY 
    sd.total_net_profit DESC
FETCH FIRST 100 ROWS ONLY;
