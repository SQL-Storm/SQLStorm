
SELECT 
    c.c_first_name,
    c.c_last_name,
    CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
    ca.ca_street_name AS street_name,
    ca.ca_city AS city,
    ca.ca_state AS state,
    ca.ca_zip AS zip_code,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.cd_education_status,
    CASE 
        WHEN LENGTH(c.c_email_address) > 0 THEN 'Email Present' 
        ELSE 'No Email' 
    END AS email_status,
    SUBSTRING(c.c_birth_month, 1, 3) AS short_birth_month,
    UPPER(c.c_country) AS country_uppercase,
    REGEXP_REPLACE(c.c_last_name, '[^a-zA-Z]', '') AS clean_last_name,
    STRING_AGG(DISTINCT wp.wp_url) AS customer_web_urls,
    COUNT(DISTINCT ss.ss_item_sk) AS total_items_purchased
FROM 
    customer c
JOIN 
    customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
JOIN 
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
LEFT JOIN 
    web_page wp ON c.c_customer_sk = wp.wp_customer_sk
LEFT JOIN 
    store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
WHERE 
    cd.cd_gender = 'F'
GROUP BY 
    c.c_first_name, 
    c.c_last_name, 
    ca.ca_street_name, 
    ca.ca_city, 
    ca.ca_state, 
    ca.ca_zip, 
    cd.cd_gender, 
    cd.cd_marital_status, 
    cd.cd_education_status, 
    c.c_email_address, 
    c.c_birth_month, 
    c.c_country
ORDER BY 
    full_name DESC;
