
WITH customer_info AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating
    FROM 
        customer c
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
), 
item_summary AS (
    SELECT 
        i.i_item_id,
        i.i_item_desc,
        SUM(ws.ws_quantity) AS total_sold,
        SUM(ws.ws_net_profit) AS total_profit
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    GROUP BY 
        i.i_item_id, i.i_item_desc
),
top_items AS (
    SELECT 
        i.i_item_id,
        i.i_item_desc,
        is.total_sold,
        is.total_profit,
        RANK() OVER (ORDER BY is.total_profit DESC) AS item_rank
    FROM 
        item_summary is
)
SELECT 
    ci.c_customer_id,
    ci.c_first_name,
    ci.c_last_name,
    ci.ca_city,
    ci.ca_state,
    ci.cd_gender,
    (SELECT 
        STRING_AGG(CONCAT(ti.i_item_desc, ' (Sold: ', ti.total_sold, ', Profit: ', ti.total_profit, ')'), ', ')
     FROM 
        top_items ti 
     WHERE 
        ti.item_rank <= 5) AS top_items_info
FROM 
    customer_info ci
WHERE 
    ci.cd_gender = 'F'
GROUP BY 
    ci.c_customer_id, 
    ci.c_first_name, 
    ci.c_last_name, 
    ci.ca_city, 
    ci.ca_state, 
    ci.cd_gender
ORDER BY 
    ci.c_last_name, 
    ci.c_first_name;
