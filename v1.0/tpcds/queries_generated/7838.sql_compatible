
WITH sales_summary AS (
    SELECT 
        ws.bill_customer_sk,
        c.c_first_name, 
        c.c_last_name,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS order_count,
        AVG(ws.ws_net_paid) AS average_order_value,
        d.d_year,
        d.d_month_seq
    FROM 
        web_sales ws
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2023
    GROUP BY 
        ws.bill_customer_sk, c.c_first_name, c.c_last_name, d.d_year, d.d_month_seq
),
top_customers AS (
    SELECT 
        bill_customer_sk, 
        c_first_name, 
        c_last_name, 
        total_sales,
        order_count, 
        average_order_value,
        ROW_NUMBER() OVER (ORDER BY total_sales DESC) AS sales_rank
    FROM 
        sales_summary
)
SELECT 
    tc.c_first_name,
    tc.c_last_name,
    tc.total_sales,
    tc.order_count,
    tc.average_order_value,
    CONCAT('Top ', CAST(tc.sales_rank AS VARCHAR)) AS customer_rank,
    CASE 
        WHEN tc.average_order_value > 100 THEN 'High Value'
        WHEN tc.average_order_value BETWEEN 50 AND 100 THEN 'Mid Value'
        ELSE 'Low Value' 
    END AS customer_value_category
FROM 
    top_customers tc
WHERE 
    tc.sales_rank <= 10
ORDER BY 
    tc.sales_rank;
