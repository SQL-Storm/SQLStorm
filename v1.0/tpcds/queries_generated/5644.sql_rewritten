WITH sales_summary AS (
    SELECT 
        d.d_year,
        d.d_month_seq,
        s.s_store_name,
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        AVG(ws.ws_sales_price) AS avg_order_value
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    JOIN 
        store s ON ws.ws_bill_addr_sk = s.s_addr_sk
    WHERE 
        d.d_year BETWEEN 1998 AND 2000
    GROUP BY 
        d.d_year, d.d_month_seq, s.s_store_name
),
customer_analysis AS (
    SELECT 
        cd.cd_gender,
        cd.cd_marital_status,
        COUNT(DISTINCT c.c_customer_sk) AS total_customers,
        SUM(ss.total_sales) AS total_sales_by_gender_and_marital_status
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        sales_summary ss ON ss.s_store_name = c.c_first_name 
    GROUP BY 
        cd.cd_gender, cd.cd_marital_status
)
SELECT 
    ca.ca_state,
    ca.ca_country,
    SUM(ca.total_sales_by_gender_and_marital_status) AS total_sales_by_state
FROM 
    customer_analysis ca
JOIN 
    customer_address addr ON addr.ca_address_sk = c.c_current_addr_sk
GROUP BY 
    ca.ca_state, ca.ca_country
ORDER BY 
    total_sales_by_state DESC
LIMIT 10;