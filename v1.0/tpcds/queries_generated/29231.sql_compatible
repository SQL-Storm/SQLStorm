
SELECT 
    c.c_customer_id,
    CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
    ca.ca_city,
    SUBSTRING_INDEX(ca.ca_street_address, '-', 1) AS street_address,
    c.cd_gender,
    c.cd_marital_status,
    COUNT(ws.ws_order_number) AS total_orders,
    SUM(ws.ws_net_profit) AS total_profit,
    AVG(ws.ws_sales_price) AS avg_sales_price,
    CHAR_LENGTH(c.c_email_address) AS email_length,
    REPLACE(UPPER(c.c_email_address), '@', '[at]') AS masked_email,
    CASE 
      WHEN c.cd_marital_status = 'M' THEN 'Married'
      ELSE 'Single'
    END AS marital_status,
    (SELECT COUNT(*) FROM store s WHERE s.s_state = ca.ca_state) AS stores_in_state
FROM 
    customer c
JOIN 
    customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
LEFT JOIN 
    web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
GROUP BY 
    c.c_customer_id, c.c_first_name, c.c_last_name, ca.ca_city, 
    ca.ca_street_address, c.cd_gender, c.cd_marital_status, 
    c.c_email_address
ORDER BY 
    total_profit DESC, 
    full_name
LIMIT 100;
