
WITH Address_City AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city
    FROM 
        customer_address
),
Customer_Info AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        CAST(cd.cd_purchase_estimate AS CHAR) AS purchase_estimate,
        ai.city_count
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN (
        SELECT ca_city, COUNT(*) AS city_count
        FROM Address_City
        GROUP BY ca_city
    ) ai ON ai.ca_city = Address_City.ca_city
),
Sales_Summary AS (
    SELECT 
        SUM(ws.ws_ext_sales_price) AS total_sales,
        MIN(ws.ws_net_profit) AS min_profit,
        MAX(ws.ws_net_profit) AS max_profit,
        ws.ws_bill_customer_sk
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_bill_customer_sk
)
SELECT 
    ci.full_name,
    ci.cd_gender,
    ci.cd_marital_status,
    ci.cd_education_status,
    ci.purchase_estimate,
    ss.total_sales,
    ss.min_profit,
    ss.max_profit
FROM 
    Customer_Info ci
LEFT JOIN 
    Sales_Summary ss ON ci.c_customer_id = ss.ws_bill_customer_sk
WHERE 
    ci.cd_gender = 'M' AND
    ci.cd_marital_status = 'S' AND
    ci.city_count > 3
ORDER BY 
    ss.total_sales DESC
FETCH FIRST 10 ROWS ONLY;
