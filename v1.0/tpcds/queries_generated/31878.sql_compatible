
WITH RECURSIVE SalesCTE AS (
    SELECT 
        ws_item_sk,
        ws_sales_price,
        ws_quantity,
        ws_net_profit,
        1 AS level
    FROM web_sales
    WHERE ws_sold_date_sk = (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2001)
    
    UNION ALL
    
    SELECT 
        ws_item_sk,
        ws_sales_price * 0.9 AS ws_sales_price, 
        ws_quantity,
        ws_net_profit,
        level + 1
    FROM SalesCTE
    WHERE level < 5
)
SELECT 
    c.c_customer_id,
    ca.ca_city,
    SUM(s.ws_sales_price) AS total_sales,
    COUNT(s.ws_quantity) AS total_items_sold,
    AVG(s.ws_net_profit) OVER (PARTITION BY c.c_customer_id) AS avg_profit,
    CASE 
        WHEN COUNT(DISTINCT s.ws_item_sk) > 10 THEN 'Frequent Buyer'
        ELSE 'Occasional Buyer'
    END AS buyer_type
FROM customer c
JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
LEFT JOIN web_sales s ON c.c_customer_sk = s.ws_bill_customer_sk
JOIN SalesCTE ON SalesCTE.ws_item_sk = s.ws_item_sk
WHERE ca.ca_city IS NOT NULL 
AND c.c_birth_year BETWEEN 1970 AND 2000
AND (s.ws_sales_price > 20 OR s.ws_sales_price IS NULL)
GROUP BY c.c_customer_id, ca.ca_city
HAVING SUM(s.ws_sales_price) > 100
ORDER BY total_sales DESC;
