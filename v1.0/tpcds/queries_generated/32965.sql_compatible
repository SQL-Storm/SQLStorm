
WITH RECURSIVE SalesCTE AS (
    SELECT 
        ws_item_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(*) AS sales_count,
        RANK() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk >= (SELECT MAX(d_date_sk) - 30 FROM date_dim)
    GROUP BY 
        ws_item_sk
), CustomerData AS (
    SELECT 
        c.c_customer_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        ca.ca_city,
        SUM(ws.ws_ext_sales_price) AS total_web_sales,
        COUNT(ws.ws_order_number) AS order_count
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        cd.cd_gender IS NOT NULL AND 
        ca.ca_city IS NOT NULL
    GROUP BY 
        c.c_customer_sk, cd.cd_gender, cd.cd_marital_status, cd.cd_purchase_estimate, ca.ca_city
), CustomerSales AS (
    SELECT 
        cd.c_customer_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        cd.ca_city,
        cs.total_web_sales,
        cs.order_count,
        ROW_NUMBER() OVER (PARTITION BY cd.ca_city ORDER BY cs.total_web_sales DESC) AS city_rank
    FROM 
        CustomerData cd
    LEFT JOIN 
        SalesCTE cs ON cd.c_customer_sk = cs.ws_item_sk 
)
SELECT
    cs.c_customer_sk,
    cs.cd_gender,
    cs.cd_marital_status,
    cs.cd_purchase_estimate,
    cs.ca_city,
    cs.total_web_sales,
    cs.order_count,
    cs.city_rank,
    COALESCE(income.ib_income_band_sk, -1) AS income_band
FROM 
    CustomerSales cs
LEFT JOIN 
    household_demographics hd ON cs.c_customer_sk = hd.hd_demo_sk
LEFT JOIN 
    income_band income ON hd.hd_income_band_sk = income.ib_income_band_sk
WHERE 
    cs.total_web_sales > 1000 AND
    (cs.order_count > 5 OR cs.cd_marital_status = 'M')
ORDER BY 
    cs.ca_city, cs.total_web_sales DESC;
