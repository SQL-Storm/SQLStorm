
WITH SalesData AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_sales_price) AS total_sales,
        SUM(ws.ws_ext_tax) AS total_tax,
        DENSE_RANK() OVER (PARTITION BY ws.web_site_id ORDER BY SUM(ws.ws_quantity) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2001
        AND dd.d_month_seq IN (6, 7) 
    GROUP BY 
        ws.web_site_id
),
TopSales AS (
    SELECT 
        web_site_id,
        total_quantity,
        total_sales,
        total_tax,
        sales_rank
    FROM 
        SalesData
    WHERE 
        sales_rank <= 3
)
SELECT 
    ts.web_site_id,
    ts.total_quantity,
    ts.total_sales,
    ts.total_tax,
    (SELECT COUNT(DISTINCT sr.sr_item_sk) FROM store_returns sr WHERE sr.sr_return_date_sk IN (SELECT d.d_date_sk FROM date_dim d WHERE d.d_year = 2001 AND d.d_month_seq IN (6, 7))) AS total_returns,
    (SELECT COUNT(DISTINCT wr.wr_item_sk) FROM web_returns wr WHERE wr.wr_returned_date_sk IN (SELECT d.d_date_sk FROM date_dim d WHERE d.d_year = 2001 AND d.d_month_seq IN (6, 7))) AS total_web_returns
FROM 
    TopSales ts
ORDER BY 
    ts.total_sales DESC;
