
WITH RECURSIVE product_hierarchy AS (
    SELECT 
        i_item_sk,
        i_item_id,
        i_brand,
        i_manufact,
        0 AS level
    FROM 
        item
    WHERE 
        i_rec_start_date <= DATE '2002-10-01' AND i_rec_end_date >= DATE '2002-10-01'

    UNION ALL

    SELECT 
        i.i_item_sk,
        i.i_item_id,
        CONCAT(p.i_brand, ' > ', i.i_brand) AS i_brand,
        CONCAT(ph.i_manufact, ' > ', i.i_manufact) AS i_manufact,
        ph.level + 1
    FROM 
        product_hierarchy ph
    JOIN 
        item i ON i.i_item_sk = ph.i_item_sk
    WHERE 
        i.i_rec_start_date <= DATE '2002-10-01' AND i.i_rec_end_date >= DATE '2002-10-01'
),
sales_data AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_net_paid) AS total_sales,
        COUNT(ws.ws_order_number) AS order_count,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY SUM(ws.ws_net_paid) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_current_year = 'Y' AND 
        dd.d_month_seq BETWEEN 1 AND 12
    GROUP BY 
        ws.ws_item_sk
),
customer_info AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_marital_status,
        cd.cd_gender,
        hd.hd_income_band_sk,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY cd.cd_purchase_estimate DESC) AS customer_rank
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        household_demographics hd ON c.c_current_hdemo_sk = hd.hd_demo_sk
    WHERE 
        hd.hd_income_band_sk IS NOT NULL
)
SELECT 
    ph.i_item_id,
    ph.i_brand,
    ph.i_manufact,
    COALESCE(sd.total_sales, 0) AS total_sales,
    COALESCE(sd.order_count, 0) AS order_count,
    ci.c_first_name,
    ci.c_last_name,
    ci.cd_marital_status,
    ci.cd_gender,
    ci.hd_income_band_sk
FROM 
    product_hierarchy ph
LEFT JOIN 
    sales_data sd ON ph.i_item_sk = sd.ws_item_sk
LEFT JOIN 
    customer_info ci ON ci.customer_rank <= 10
WHERE 
    ph.level = 0
ORDER BY 
    total_sales DESC, ph.i_item_id;
