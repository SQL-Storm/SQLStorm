
WITH RECURSIVE sales_data AS (
    SELECT 
        ws.web_site_id,
        ws_sold_date_sk,
        SUM(ws.ws_net_paid) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY ws.web_site_id ORDER BY SUM(ws.ws_net_paid) DESC) AS sales_rank
    FROM 
        web_sales ws
    INNER JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year BETWEEN 1998 AND 2001
    GROUP BY 
        ws.web_site_id, ws_sold_date_sk
),
customer_summary AS (
    SELECT 
        c.c_customer_id,
        cd.cd_gender,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        SUM(ws.ws_net_paid) AS total_spent
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    INNER JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        c.c_customer_id, cd.cd_gender
)
SELECT 
    cs.c_customer_id,
    cs.cd_gender,
    cs.order_count,
    COALESCE(cs.total_spent, 0) AS total_spent,
    COALESCE(sd.total_sales, 0) AS web_site_sales
FROM 
    customer_summary cs
LEFT JOIN 
    sales_data sd ON sd.web_site_id = (
        SELECT ws.web_site_id 
        FROM web_sales ws 
        WHERE ws.ws_bill_customer_sk = cs.c_customer_sk 
        LIMIT 1
    )
WHERE 
    cs.order_count > 5
ORDER BY 
    total_spent DESC, web_site_sales ASC
FETCH FIRST 10 ROWS ONLY;
