
WITH ranked_sales AS (
    SELECT 
        ws.ws_item_sk,
        ws.ws_order_number,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_net_profit DESC) AS rn,
        ws.ws_net_profit,
        ws.ws_quantity,
        COALESCE(ws.ws_ext_discount_amt, 0) AS discount,
        ws.ws_sales_price * ws.ws_quantity AS total_sales
    FROM 
        web_sales ws
    WHERE 
        ws.ws_ship_date_sk IS NOT NULL
        AND ws.ws_net_profit > 0
),
total_sales AS (
    SELECT
        r.ws_item_sk,
        SUM(r.total_sales) AS total_sales_amount,
        SUM(r.discount) AS total_discount
    FROM 
        ranked_sales r
    WHERE 
        r.rn = 1
    GROUP BY 
        r.ws_item_sk
),
customer_sales AS (
    SELECT 
        c.c_customer_sk,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        AVG(ws.ws_net_profit) AS avg_profit
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk
),
customer_stats AS (
    SELECT 
        cd.cd_demo_sk AS c_customer_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        COALESCE(cs.order_count, 0) AS order_count,
        COALESCE(cs.avg_profit, 0) AS avg_profit
    FROM 
        customer_demographics cd
    LEFT JOIN 
        customer_sales cs ON cd.cd_demo_sk = cs.c_customer_sk
)

SELECT 
    ca.ca_city,
    cs.cd_gender,
    COUNT(DISTINCT cs.c_customer_sk) AS customer_count,
    SUM(ts.total_sales_amount) AS total_sales_sum,
    SUM(ts.total_discount) AS total_discount_sum
FROM 
    customer_address ca
INNER JOIN 
    customer_stats cs ON ca.ca_address_sk = cs.c_customer_sk
LEFT JOIN 
    total_sales ts ON ts.ws_item_sk IN (
        SELECT 
            i.i_item_sk 
        FROM 
            item i 
        WHERE 
            i.i_current_price BETWEEN 10 AND 100 
            AND (i.i_brand LIKE 'BrandA%' OR i.i_class IN (SELECT DISTINCT ccd.class FROM catalog_page ccd WHERE ccd.cp_catalog_number IS NOT NULL))
    )
WHERE 
    (cs.avg_profit IS NOT NULL OR cs.order_count > 0)
GROUP BY 
    ca.ca_city, cs.cd_gender
HAVING 
    COUNT(DISTINCT cs.c_customer_sk) > 5
ORDER BY 
    total_sales_sum DESC, ca.ca_city ASC;
