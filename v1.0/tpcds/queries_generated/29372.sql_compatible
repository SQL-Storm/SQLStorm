
WITH CustomerDetails AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
ActiveStores AS (
    SELECT 
        s.s_store_sk,
        s.s_store_name,
        s.s_city,
        s.s_state,
        s.s_country
    FROM 
        store s
    WHERE 
        s.s_closed_date_sk IS NULL
),
RecentSales AS (
    SELECT 
        ws.ws_item_sk,
        COUNT(ws.ws_order_number) AS total_sales,
        SUM(ws.ws_sales_price) AS total_revenue
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_date > DATE '2002-10-01' - INTERVAL '1 year'
    GROUP BY 
        ws.ws_item_sk
)
SELECT 
    cd.full_name,
    cd.ca_city,
    cd.ca_state,
    cd.ca_country,
    s.s_store_name,
    s.s_city AS store_city,
    s.s_state AS store_state,
    s.s_country AS store_country,
    ss.total_sales,
    ss.total_revenue
FROM 
    CustomerDetails cd
JOIN 
    ActiveStores s ON cd.ca_state = s.s_state
JOIN 
    RecentSales ss ON ss.ws_item_sk IN (
        SELECT 
            i.i_item_sk 
        FROM 
            item i 
        WHERE 
            i.i_manager_id IN (SELECT DISTINCT s.s_manager FROM store s)
    )
ORDER BY 
    cd.full_name;
