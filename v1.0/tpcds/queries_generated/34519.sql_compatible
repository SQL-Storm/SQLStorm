
WITH RECURSIVE sales_hierarchy AS (
    SELECT 
        c.c_customer_sk, 
        c.c_customer_id, 
        c.c_first_name, 
        c.c_last_name, 
        c.c_preferred_cust_flag, 
        SUM(ws.ws_net_profit) AS total_profit
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_customer_id, c.c_first_name, c.c_last_name, c.c_preferred_cust_flag
    HAVING 
        SUM(ws.ws_net_profit) > 500
    UNION ALL
    SELECT 
        c.c_customer_sk, 
        c.c_customer_id, 
        c.c_first_name, 
        c.c_last_name, 
        c.c_preferred_cust_flag, 
        SUM(ws.ws_net_profit) AS total_profit
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    JOIN 
        sales_hierarchy sh ON c.c_customer_sk = sh.c_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_customer_id, c.c_first_name, c.c_last_name, c.c_preferred_cust_flag
),
ranked_sales AS (
    SELECT 
        r.c_customer_sk,
        r.c_customer_id,
        r.c_first_name,
        r.c_last_name,
        r.c_preferred_cust_flag,
        r.total_profit,
        RANK() OVER (PARTITION BY r.c_preferred_cust_flag ORDER BY r.total_profit DESC) AS rank_profit
    FROM 
        sales_hierarchy r
),
qualified_customers AS (
    SELECT 
        r.c_customer_id,
        r.c_first_name,
        r.c_last_name,
        r.total_profit,
        i.i_item_desc,
        i.i_current_price,
        r.rank_profit
    FROM 
        ranked_sales r
    JOIN 
        web_sales ws ON r.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        r.rank_profit <= 10
)
SELECT 
    qc.c_customer_id, 
    qc.c_first_name, 
    qc.c_last_name, 
    qc.total_profit, 
    i.i_item_desc, 
    i.i_current_price, 
    CASE 
        WHEN qc.total_profit IS NULL THEN 'No Sales'
        ELSE 'Has Sales'
    END AS sales_status
FROM 
    qualified_customers qc
LEFT JOIN 
    item i ON qc.i_item_sk = i.i_item_sk
ORDER BY 
    qc.total_profit DESC 
LIMIT 100;
