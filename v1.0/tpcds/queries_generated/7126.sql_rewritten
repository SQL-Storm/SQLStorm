WITH sales_summary AS (
    SELECT 
        ws_sold_date_sk,
        ws_item_sk,
        SUM(ws_sales_price) AS total_sales,
        COUNT(ws_order_number) AS order_count,
        SUM(ws_net_paid_inc_tax) AS total_net_paid
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk BETWEEN 2451545 AND 2451830  
    GROUP BY 
        ws_sold_date_sk, ws_item_sk
),
customer_details AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        cd.cd_gender = 'M' AND cd.cd_marital_status = 'M'  
),
top_products AS (
    SELECT 
        ss_item_sk,
        total_sales,
        ROW_NUMBER() OVER (ORDER BY total_sales DESC) AS sales_rank
    FROM 
        sales_summary
),
final_report AS (
    SELECT 
        cp.cp_catalog_page_id,
        tp.ss_item_sk,
        tp.total_sales,
        cd.c_first_name,
        cd.c_last_name,
        cd.cd_purchase_estimate
    FROM 
        top_products tp
    JOIN 
        item i ON tp.ss_item_sk = i.i_item_sk
    JOIN 
        catalog_page cp ON i.i_category_id = cp.cp_catalog_page_sk
    JOIN 
        customer_details cd ON cd.c_customer_sk = tp.ss_item_sk  
)
SELECT 
    fr.cp_catalog_page_id,
    fr.ss_item_sk,
    fr.total_sales,
    fr.c_first_name,
    fr.c_last_name,
    fr.cd_purchase_estimate
FROM 
    final_report fr
WHERE 
    fr.sales_rank <= 10;