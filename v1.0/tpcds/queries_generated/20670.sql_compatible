
WITH Rank_CTE AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_profit) AS total_profit,
        RANK() OVER (PARTITION BY c.c_customer_sk ORDER BY SUM(ws.ws_net_profit) DESC) AS customer_rank,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        c.c_birth_year > 1980
        AND (c.c_country IS NULL OR c.c_country = '')
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
High_Profit_Customer AS (
    SELECT 
        R.c_customer_sk,
        R.c_first_name,
        R.c_last_name,
        R.total_profit,
        R.customer_rank,
        COALESCE(i.i_item_desc, 'Unknown Item') AS item_description,
        COUNT(DISTINCT ss.ss_ticket_number) AS return_count
    FROM 
        Rank_CTE R
    LEFT JOIN 
        store_sales ss ON R.c_customer_sk = ss.ss_customer_sk AND ss.ss_net_profit < 0
    LEFT JOIN 
        item i ON i.i_item_sk = ss.ss_item_sk
    WHERE 
        R.customer_rank = 1
    GROUP BY 
        R.c_customer_sk, R.c_first_name, R.c_last_name, R.total_profit, R.customer_rank, i.i_item_desc
),
Date_Comparison AS (
    SELECT 
        D.d_date_id,
        D.d_year,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        AVG(ws.ws_net_profit) AS avg_order_profit
    FROM 
        date_dim D
    LEFT JOIN 
        web_sales ws ON D.d_date_sk = ws.ws_sold_date_sk
    WHERE 
        D.d_year BETWEEN 1998 AND EXTRACT(YEAR FROM DATE '2002-10-01')
    GROUP BY 
        D.d_date_id, D.d_year
)
SELECT 
    H.c_first_name,
    H.c_last_name,
    H.total_profit AS top_profit,
    DC.d_year,
    DC.total_orders,
    DC.avg_order_profit,
    CASE 
        WHEN H.return_count > 5 THEN 'Frequent Returner'
        WHEN H.return_count BETWEEN 1 AND 5 THEN 'Occasional Returner'
        ELSE 'No Returns'
    END AS return_behavior,
    (SELECT AVG(total_profit) FROM Rank_CTE) AS avg_customer_profit
FROM 
    High_Profit_Customer H
JOIN 
    Date_Comparison DC ON H.total_profit > 1000
ORDER BY 
    H.total_profit DESC, DC.d_year DESC
LIMIT 10;
