
WITH RankedSales AS (
    SELECT 
        ws.web_site_id, 
        SUM(ws.ws_quantity) AS total_quantity, 
        SUM(ws.ws_net_profit) AS total_profit,
        DENSE_RANK() OVER (PARTITION BY ws.web_site_id ORDER BY SUM(ws.ws_net_profit) DESC) AS profit_rank
    FROM 
        web_sales ws
    JOIN 
        web_site w ON ws.ws_web_site_sk = w.web_site_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_date BETWEEN DATE '2022-01-01' AND DATE '2022-12-31'
    GROUP BY 
        ws.web_site_id
),
TopPerformers AS (
    SELECT 
        web_site_id, 
        total_quantity, 
        total_profit 
    FROM 
        RankedSales 
    WHERE 
        profit_rank <= 5
)
SELECT 
    w.web_name,
    tp.total_quantity, 
    tp.total_profit
FROM 
    TopPerformers tp
JOIN 
    web_site w ON tp.web_site_id = w.web_site_id
ORDER BY 
    tp.total_profit DESC;
