WITH RankedSales AS (
    SELECT 
        ws.web_site_sk,
        SUM(ws.ws_net_paid) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        DENSE_RANK() OVER (PARTITION BY ws.web_site_sk ORDER BY SUM(ws.ws_net_paid) DESC) AS sale_rank
    FROM 
        web_sales ws 
    WHERE 
        ws.ws_sold_date_sk = (SELECT d.d_date_sk 
                               FROM date_dim d 
                               WHERE d.d_date = cast('2002-10-01' as date))
    GROUP BY 
        ws.web_site_sk
),
HighValueCustomers AS (
    SELECT 
        c.c_customer_sk,
        SUM(ws.ws_net_paid_inc_tax) AS total_spent
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        ws.ws_sold_date_sk BETWEEN (SELECT MIN(d.d_date_sk) 
                                     FROM date_dim d 
                                     WHERE d.d_year = EXTRACT(YEAR FROM cast('2002-10-01' as date)) - 1) 
                               AND (SELECT MAX(d.d_date_sk) 
                                     FROM date_dim d 
                                     WHERE d.d_year = EXTRACT(YEAR FROM cast('2002-10-01' as date)))
    GROUP BY 
        c.c_customer_sk
    HAVING 
        total_spent > (SELECT AVG(total_spent) FROM (
                           SELECT SUM(ws.ws_net_paid_inc_tax) AS total_spent
                           FROM customer c 
                           JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
                           WHERE ws.ws_sold_date_sk BETWEEN (SELECT MIN(d.d_date_sk) 
                                                              FROM date_dim d 
                                                              WHERE d.d_year = EXTRACT(YEAR FROM cast('2002-10-01' as date)) - 1) 
                                                        AND (SELECT MAX(d.d_date_sk) 
                                                              FROM date_dim d 
                                                              WHERE d.d_year = EXTRACT(YEAR FROM cast('2002-10-01' as date)))
                           GROUP BY c.c_customer_sk
                       ) avg_spent)
),
SeasonalSales AS (
    SELECT 
        w.w_warehouse_sk,
        SUM(ss.ss_net_paid) AS total_store_sales,
        COUNT(DISTINCT ss.ss_ticket_number) AS total_transactions
    FROM 
        store_sales ss
    JOIN 
        warehouse w ON ss.ss_store_sk = w.w_warehouse_sk
    WHERE 
        ss.ss_sold_date_sk IN (SELECT d.d_date_sk 
                                FROM date_dim d 
                                WHERE d.d_quarter_seq = (SELECT MAX(d_quarter_seq) 
                                                          FROM date_dim 
                                                          WHERE d_year = EXTRACT(YEAR FROM cast('2002-10-01' as date)))
                                AND d.d_year = EXTRACT(YEAR FROM cast('2002-10-01' as date)))
    GROUP BY 
        w.w_warehouse_sk
)
SELECT 
    hvc.c_customer_sk,
    rws.web_site_sk,
    rws.total_sales,
    rws.order_count,
    ss.w_warehouse_sk,
    ss.total_store_sales,
    ss.total_transactions
FROM 
    HighValueCustomers hvc
JOIN 
    RankedSales rws ON rws.sale_rank = 1
LEFT JOIN 
    SeasonalSales ss ON ss.total_store_sales > 0
WHERE 
    hvc.total_spent > (SELECT SUM(total_sales) FROM RankedSales WHERE sale_rank <= 10)
ORDER BY 
    hvc.total_spent DESC, 
    rws.total_sales DESC;