
WITH AddressDetails AS (
    SELECT 
        ca_address_id,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip,
        ca_country
    FROM customer_address
),
CustomerDetails AS (
    SELECT 
        c_customer_id,
        CONCAT(c_salutation, ' ', c_first_name, ' ', c_last_name) AS full_name,
        cd_gender,
        cd_marital_status,
        cd_purchase_estimate
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
SalesData AS (
    SELECT 
        ws_order_number,
        ws_sales_price,
        ws_ship_date_sk,
        ws_bill_customer_sk,
        ws_shipping_mode,
        d.d_date AS sales_date
    FROM web_sales w
    JOIN date_dim d ON w.ws_sold_date_sk = d.d_date_sk
),
Benchmarking AS (
    SELECT 
        a.full_address,
        c.full_name,
        c.cd_gender,
        c.cd_marital_status,
        SUM(s.ws_sales_price) AS total_sales,
        COUNT(s.ws_order_number) AS total_orders,
        MAX(s.sales_date) AS last_purchase_date
    FROM AddressDetails a
    JOIN CustomerDetails c ON c.c_customer_id = (
        SELECT c_customer_id 
        FROM customer 
        WHERE c_current_addr_sk = a.ca_address_id
    )
    JOIN SalesData s ON s.ws_bill_customer_sk = c.c_customer_id
    GROUP BY a.full_address, c.full_name, c.cd_gender, c.cd_marital_status
)
SELECT 
    full_address,
    full_name,
    cd_gender,
    cd_marital_status,
    total_sales,
    total_orders,
    last_purchase_date
FROM Benchmarking
WHERE total_sales > 1000
ORDER BY total_sales DESC;
