
WITH customer_info AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_salutation, ' ', c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.ca_city,
        ca.ca_state
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
sales_data AS (
    SELECT 
        ws.ws_bill_customer_sk,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_bill_customer_sk
),
merged_data AS (
    SELECT 
        ci.full_name,
        ci.ca_city,
        ci.ca_state,
        sd.total_profit,
        sd.order_count
    FROM 
        customer_info ci
    LEFT JOIN 
        sales_data sd ON ci.c_customer_sk = sd.ws_bill_customer_sk
)
SELECT 
    ca.ca_city,
    ca.ca_state,
    COUNT(DISTINCT md.c_customer_sk) AS total_customers,
    AVG(COALESCE(md.total_profit, 0)) AS avg_profit,
    AVG(COALESCE(md.order_count, 0)) AS avg_order_count
FROM 
    merged_data md
JOIN 
    customer_address ca ON md.ca_city = ca.ca_city AND md.ca_state = ca.ca_state
GROUP BY 
    ca.ca_city, ca.ca_state
ORDER BY 
    total_customers DESC, avg_profit DESC
FETCH FIRST 10 ROWS ONLY;
