
WITH AddressDetail AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip,
        ca_country
    FROM 
        customer_address
),
Demographics AS (
    SELECT
        cd_demo_sk,
        cd_gender,
        CASE 
            WHEN cd_marital_status = 'M' THEN 'Married'
            WHEN cd_marital_status = 'S' THEN 'Single'
            ELSE 'Other'
        END AS marital_status,
        cd_education_status,
        cd_purchase_estimate
    FROM 
        customer_demographics
),
DateDetails AS (
    SELECT 
        d_date_sk,
        TO_CHAR(d_date, 'YYYY-MM-DD') AS formatted_date,
        d_year,
        d_month_seq,
        d_quarter_seq
    FROM 
        date_dim
),
CustomerDetails AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        ad.full_address,
        dm.marital_status,
        dm.cd_gender,
        dd.formatted_date,
        dd.d_year
    FROM 
        customer c
    JOIN 
        AddressDetail ad ON c.c_current_addr_sk = ad.ca_address_sk
    JOIN 
        Demographics dm ON c.c_current_cdemo_sk = dm.cd_demo_sk
    JOIN 
        DateDetails dd ON c.c_first_sales_date_sk = dd.d_date_sk
)
SELECT 
    cd.c_first_name,
    cd.c_last_name,
    cd.full_address,
    cd.marital_status,
    cd.cd_gender,
    COUNT(*) AS purchase_count,
    SUM(ss.ss_net_paid) AS total_spent
FROM 
    CustomerDetails cd
LEFT JOIN 
    store_sales ss ON cd.c_customer_sk = ss.ss_customer_sk
GROUP BY 
    cd.c_first_name, cd.c_last_name, cd.full_address, cd.marital_status, cd.cd_gender
ORDER BY 
    total_spent DESC
FETCH FIRST 100 ROWS ONLY;
