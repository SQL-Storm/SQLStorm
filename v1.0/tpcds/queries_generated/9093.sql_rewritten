WITH ranked_sales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_sales_price) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY SUM(ws.ws_sales_price) DESC) AS rank
    FROM 
        web_sales ws
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    WHERE 
        ws.ws_sold_date_sk BETWEEN 2458476 AND 2458476 + 30  
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
top_customers AS (
    SELECT 
        r.c_customer_sk,
        r.c_first_name,
        r.c_last_name,
        r.total_quantity,
        r.total_sales
    FROM 
        ranked_sales r
    WHERE 
        r.rank <= 10
)
SELECT 
    tc.c_first_name,
    tc.c_last_name,
    tc.total_quantity,
    tc.total_sales,
    d.d_date AS last_purchase_date,
    DATEADD(day, -1, d.d_date) AS previous_purchase_date,
    DATEDIFF(day, DATEADD(day, -1, d.d_date), d.d_date) AS days_between_purchases
FROM 
    top_customers tc
JOIN 
    web_sales ws ON tc.c_customer_sk = ws.ws_bill_customer_sk
JOIN 
    date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
WHERE 
    d.d_date = (SELECT MAX(d2.d_date) FROM date_dim d2 WHERE d2.d_date_sk = ws.ws_sold_date_sk)
ORDER BY 
    tc.total_sales DESC;