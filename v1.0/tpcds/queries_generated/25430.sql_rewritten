WITH Address_City AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city
    FROM 
        customer_address
),
Customer_Demographics AS (
    SELECT 
        cd_demo_sk,
        cd_gender,
        cd_marital_status,
        cd_education_status,
        cd_purchase_estimate
    FROM 
        customer_demographics
),
Date_Summary AS (
    SELECT 
        d_year,
        d_month_seq,
        COUNT(DISTINCT d_date_sk) AS total_days,
        AVG(d_dom) AS avg_day_of_month
    FROM 
        date_dim
    GROUP BY 
        d_year, d_month_seq
),
Sales_Summary AS (
    SELECT
        ws_bill_customer_sk,
        SUM(ws_net_profit) AS total_profit,
        AVG(ws_sales_price) AS avg_sales_price
    FROM 
        web_sales
    GROUP BY 
        ws_bill_customer_sk
),
Combined AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        a.full_address,
        a.ca_city,
        d.cd_gender,
        d.cd_marital_status,
        d.cd_education_status,
        s.total_profit,
        s.avg_sales_price,
        y.d_year,
        y.total_days,
        y.avg_day_of_month
    FROM 
        customer c
    JOIN 
        Address_City a ON c.c_current_addr_sk = a.ca_address_sk
    JOIN 
        Customer_Demographics d ON c.c_current_cdemo_sk = d.cd_demo_sk
    JOIN 
        Sales_Summary s ON c.c_customer_sk = s.ws_bill_customer_sk
    JOIN 
        Date_Summary y ON s.total_profit > 0  
)
SELECT 
    CONCAT(c_first_name, ' ', c_last_name) AS customer_name,
    full_address,
    ca_city,
    cd_gender,
    cd_marital_status,
    cd_education_status,
    ROUND(total_profit, 2) AS total_profit,
    ROUND(avg_sales_price, 2) AS average_sales_price,
    d_year,
    total_days,
    avg_day_of_month
FROM 
    Combined
ORDER BY 
    total_profit DESC
LIMIT 100;