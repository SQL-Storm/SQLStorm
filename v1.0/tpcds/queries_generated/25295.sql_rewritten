WITH AddressDetails AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS Full_Address,
        ca_city,
        ca_state,
        ca_country
    FROM 
        customer_address
),
CustomerDetails AS (
    SELECT 
        c_customer_sk,
        CONCAT(c_first_name, ' ', c_last_name) AS Full_Name,
        cd_gender,
        cd_marital_status,
        cd_purchase_estimate,
        cd_credit_rating
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
DateDetails AS (
    SELECT 
        d_date_sk,
        DATE_FORMAT(d_date, '%Y-%m-%d') AS Formatted_Date,
        d_week_seq,
        d_month_seq,
        d_year,
        d_day_name
    FROM 
        date_dim
),
SalesDetails AS (
    SELECT 
        ws_item_sk,
        SUM(ws_quantity) AS Total_Quantity_Sold,
        SUM(ws_net_paid_inc_tax) AS Total_Sales
    FROM 
        web_sales
    GROUP BY 
        ws_item_sk
)
SELECT 
    CD.Full_Name,
    AD.Full_Address,
    DD.Formatted_Date,
    SD.Total_Quantity_Sold,
    SD.Total_Sales
FROM 
    CustomerDetails CD
JOIN 
    AddressDetails AD ON CD.c_customer_sk = AD.ca_address_sk  
JOIN 
    SalesDetails SD ON CD.c_customer_sk = SD.ws_item_sk       
JOIN 
    DateDetails DD ON DD.d_date_sk = SD.Total_Quantity_Sold   
WHERE 
    CD.cd_gender = 'F' 
    AND CD.cd_marital_status = 'M' 
    AND DD.d_year = 2001
ORDER BY 
    SD.Total_Sales DESC
LIMIT 100;