
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_ext_sales_price) AS total_web_sales,
        SUM(cs.cs_ext_sales_price) AS total_catalog_sales,
        SUM(ss.ss_ext_sales_price) AS total_store_sales
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        catalog_sales cs ON c.c_customer_sk = cs.cs_bill_customer_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    WHERE 
        c.c_birth_year BETWEEN 1980 AND 1990
    GROUP BY 
        c.c_customer_id
),
SalesAnalysis AS (
    SELECT 
        c.c_customer_id AS customer_id,
        c.total_web_sales,
        c.total_catalog_sales,
        c.total_store_sales,
        CASE 
            WHEN c.total_web_sales > c.total_catalog_sales AND c.total_web_sales > c.total_store_sales THEN 'Web'
            WHEN c.total_catalog_sales > c.total_web_sales AND c.total_catalog_sales > c.total_store_sales THEN 'Catalog'
            WHEN c.total_store_sales > c.total_web_sales AND c.total_store_sales > c.total_catalog_sales THEN 'Store'
            ELSE 'Equal Sales'
        END AS highest_sales_channel
    FROM 
        CustomerSales c
)
SELECT 
    dma.cd_gender,
    COUNT(s.customer_id) AS customer_count,
    AVG(s.total_web_sales) AS avg_web_sales,
    AVG(s.total_catalog_sales) AS avg_catalog_sales,
    AVG(s.total_store_sales) AS avg_store_sales,
    MAX(s.total_web_sales) AS max_web_sales,
    MAX(s.total_catalog_sales) AS max_catalog_sales,
    MAX(s.total_store_sales) AS max_store_sales
FROM 
    SalesAnalysis s
JOIN 
    customer_demographics dma ON s.customer_id = dma.cd_demo_sk
GROUP BY 
    dma.cd_gender
ORDER BY 
    customer_count DESC, avg_web_sales DESC;
