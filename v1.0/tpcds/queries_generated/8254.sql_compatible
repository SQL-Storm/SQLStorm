
WITH sales_summary AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_paid) AS total_sales,
        AVG(ws.ws_net_paid) AS average_sale_per_order,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        DATE(d.d_date) AS sale_date
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    JOIN 
        customer c ON ws.ws_ship_customer_sk = c.c_customer_sk
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        d.d_year = 2023 AND 
        cd.cd_gender = 'F' AND 
        cd.cd_marital_status = 'M'
    GROUP BY 
        ws.web_site_id, d.d_date
),
ranked_sales AS (
    SELECT 
        sale_date,
        web_site_id,
        total_quantity,
        total_sales,
        average_sale_per_order,
        order_count,
        RANK() OVER (PARTITION BY sale_date ORDER BY total_sales DESC) AS sales_rank
    FROM 
        sales_summary
)
SELECT 
    sale_date,
    web_site_id,
    total_quantity,
    total_sales,
    average_sale_per_order,
    order_count,
    sales_rank
FROM 
    ranked_sales
WHERE 
    sales_rank <= 5
ORDER BY 
    sale_date, sales_rank;
