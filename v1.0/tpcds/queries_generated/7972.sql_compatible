
WITH SalesData AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        AVG(ws.ws_sales_price) AS avg_sales_price,
        COUNT(DISTINCT ws.ws_bill_customer_sk) AS unique_customers,
        d.d_year,
        d.d_month_seq
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year BETWEEN 2021 AND 2023
    GROUP BY 
        ws.web_site_id, d.d_year, d.d_month_seq
),
TopSales AS (
    SELECT 
        web_site_id,
        total_sales,
        avg_sales_price,
        unique_customers,
        ROW_NUMBER() OVER (PARTITION BY d_year ORDER BY total_sales DESC) AS rank,
        d_year
    FROM 
        SalesData
)
SELECT 
    ts.web_site_id,
    ts.total_sales,
    ts.avg_sales_price,
    ts.unique_customers,
    ts.d_year
FROM 
    TopSales ts
WHERE 
    ts.rank <= 5
ORDER BY 
    ts.d_year, ts.total_sales DESC;
