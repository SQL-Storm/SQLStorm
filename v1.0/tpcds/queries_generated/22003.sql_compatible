
WITH RECURSIVE sales_rank AS (
    SELECT 
        ws.web_site_sk,
        ws.ws_order_number,
        ws.ws_quantity,
        ws.ws_net_profit,
        ROW_NUMBER() OVER (PARTITION BY ws.web_site_sk ORDER BY ws.ws_net_profit DESC) AS rank
    FROM web_sales ws
    WHERE ws.ws_sold_date_sk BETWEEN 20230101 AND 20231231
),
address_agg AS (
    SELECT 
        ca.ca_state,
        COUNT(DISTINCT c.c_customer_sk) AS unique_customers,
        SUM(CASE WHEN cd.cd_gender = 'F' THEN 1 ELSE 0 END) AS female_customers,
        SUM(CASE WHEN cd.cd_gender = 'M' THEN 1 ELSE 0 END) AS male_customers
    FROM customer_address ca
    JOIN customer c ON ca.ca_address_sk = c.c_current_addr_sk
    LEFT JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE ca.ca_country = 'USA'
    GROUP BY ca.ca_state
),
promo_summary AS (
    SELECT 
        p.p_promo_name,
        COUNT(DISTINCT ws.ws_order_number) AS promo_orders,
        SUM(ws.ws_net_profit) AS total_profit
    FROM promotion p
    JOIN web_sales ws ON p.p_promo_sk = ws.ws_promo_sk
    WHERE ws.ws_sold_date_sk BETWEEN 20230101 AND 20231231
    GROUP BY p.p_promo_name
    HAVING COUNT(DISTINCT ws.ws_order_number) > 10
)
SELECT 
    a.ca_state,
    a.unique_customers,
    a.female_customers,
    a.male_customers,
    COALESCE(p.promo_orders, 0) AS promo_orders,
    COALESCE(p.total_profit, 0) AS total_profit,
    SUM(sr.ws_net_profit) AS total_sales_profit,
    CASE 
        WHEN COUNT(sr.ws_order_number) > 10 THEN 'High Volume'
        ELSE 'Low Volume'
    END AS volume_category
FROM address_agg a
LEFT JOIN promo_summary p ON a.ca_state = (
    SELECT 
        ca.ca_state 
    FROM customer_address ca
    JOIN customer c ON ca.ca_address_sk = c.c_current_addr_sk
    WHERE c.c_customer_sk IN (
        SELECT DISTINCT
            ws.ws_bill_customer_sk
        FROM web_sales ws
        WHERE ws.ws_order_number IN (
            SELECT ws_order_number FROM sales_rank WHERE rank <= 10
        )
    )
    LIMIT 1
)
LEFT JOIN sales_rank sr ON a.unique_customers = sr.web_site_sk
GROUP BY a.ca_state, a.unique_customers, a.female_customers, a.male_customers, 
         p.promo_orders, p.total_profit
ORDER BY total_profit DESC, a.ca_state
LIMIT 100;
