
WITH customer_sales AS (
    SELECT 
        c.c_customer_sk,
        SUM(ws.ws_net_paid) AS total_web_sales,
        SUM(cs.cs_net_paid) AS total_catalog_sales,
        SUM(ss.ss_net_paid) AS total_store_sales
    FROM 
        customer c
    LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN catalog_sales cs ON c.c_customer_sk = cs.cs_bill_customer_sk
    LEFT JOIN store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY 
        c.c_customer_sk
),
customer_demo AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_credit_rating,
        cd.cd_purchase_estimate,
        cd.cd_dep_count,
        cd.cd_dep_college_count
    FROM 
        customer_demographics cd
    JOIN customer c ON cd.cd_demo_sk = c.c_current_cdemo_sk
),
sales_summary AS (
    SELECT 
        cs.c_customer_sk,
        md.cd_gender,
        md.cd_marital_status,
        md.cd_education_status,
        cs.total_web_sales,
        cs.total_catalog_sales,
        cs.total_store_sales,
        COALESCE(cs.total_web_sales, 0) + COALESCE(cs.total_catalog_sales, 0) + COALESCE(cs.total_store_sales, 0) AS total_sales
    FROM 
        customer_sales cs
    JOIN customer_demo md ON cs.c_customer_sk = md.c_customer_sk
)

SELECT 
    ss.cd_gender,
    ss.cd_marital_status,
    ss.cd_education_status,
    COUNT(ss.c_customer_sk) AS customer_count,
    AVG(ss.total_sales) AS avg_total_sales
FROM 
    sales_summary ss
WHERE 
    ss.total_sales > 0
GROUP BY 
    ss.cd_gender, ss.cd_marital_status, ss.cd_education_status
ORDER BY 
    avg_total_sales DESC
FETCH FIRST 10 ROWS ONLY;
