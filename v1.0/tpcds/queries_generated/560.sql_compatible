
WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_paid) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM 
        customer c
    LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
TopCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cs.total_sales,
        ROW_NUMBER() OVER (ORDER BY cs.total_sales DESC) AS sales_rank
    FROM 
        CustomerSales cs
    JOIN customer c ON cs.c_customer_sk = c.c_customer_sk
)
SELECT 
    tc.c_first_name,
    tc.c_last_name,
    COALESCE(tc.total_sales, 0) AS total_sales,
    COALESCE(cr.total_refunds, 0) AS total_refunds,
    (COALESCE(tc.total_sales, 0) - COALESCE(cr.total_refunds, 0)) AS net_sales
FROM 
    TopCustomers tc
LEFT JOIN (
    SELECT 
        sr_ret.sr_returning_customer_sk,
        SUM(sr_ret.sr_return_amt_inc_tax) AS total_refunds
    FROM 
        store_returns sr_ret
    GROUP BY 
        sr_ret.sr_returning_customer_sk
) cr ON tc.c_customer_sk = cr.sr_returning_customer_sk
WHERE 
    tc.sales_rank <= 10
ORDER BY 
    net_sales DESC;
