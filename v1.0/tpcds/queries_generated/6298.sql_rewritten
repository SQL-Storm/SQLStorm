WITH CustomerStats AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        COUNT(DISTINCT c.c_customer_id) AS total_customers,
        COUNT(DISTINCT w.ws_order_number) AS total_web_sales,
        SUM(ws.ws_net_paid) AS total_sales_amount,
        AVG(ws.ws_net_paid) AS avg_sales_per_customer,
        SUM(CASE WHEN ws.ws_ship_mode_sk = sm.sm_ship_mode_sk THEN ws.ws_net_paid ELSE 0 END) AS total_sales_by_ship_mode
    FROM 
        customer_demographics cd
    JOIN 
        customer c ON cd.cd_demo_sk = c.c_current_cdemo_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        ship_mode sm ON ws.ws_ship_mode_sk = sm.sm_ship_mode_sk
    GROUP BY 
        cd.cd_demo_sk, cd.cd_gender, cd.cd_marital_status
),
DateStats AS (
    SELECT 
        d.d_year,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        SUM(ws.ws_net_paid) AS total_revenue
    FROM 
        date_dim d
    JOIN 
        web_sales ws ON d.d_date_sk = ws.ws_sold_date_sk
    GROUP BY 
        d.d_year
),
SalesByMonth AS (
    SELECT 
        EXTRACT(YEAR FROM d.d_date) AS sales_year,
        EXTRACT(MONTH FROM d.d_date) AS sales_month,
        SUM(ws.ws_net_paid) AS monthly_revenue
    FROM 
        date_dim d
    JOIN 
        web_sales ws ON d.d_date_sk = ws.ws_sold_date_sk
    GROUP BY 
        sales_year, sales_month
)
SELECT 
    cs.cd_gender,
    cs.cd_marital_status,
    ds.d_year,
    ds.total_orders,
    ds.total_revenue,
    sm.sm_type AS shipping_method,
    SUM(cs.total_sales_amount) AS total_amount,
    AVG(cs.avg_sales_per_customer) AS average_sales_per_customer,
    mb.monthly_revenue
FROM 
    CustomerStats cs
JOIN 
    DateStats ds ON DATE_TRUNC('year', cast('2002-10-01' as date)) = ds.d_year
JOIN 
    ship_mode sm ON sm.sm_ship_mode_sk = cs.total_sales_by_ship_mode
JOIN 
    SalesByMonth mb ON mb.sales_year = ds.d_year AND mb.sales_month = EXTRACT(MONTH FROM cast('2002-10-01' as date))
GROUP BY 
    cs.cd_gender, cs.cd_marital_status, ds.d_year, sm.sm_type, mb.monthly_revenue
ORDER BY 
    ds.d_year DESC, total_amount DESC;