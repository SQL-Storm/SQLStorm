
WITH RankedCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_gender ORDER BY cd.cd_purchase_estimate DESC) AS purchase_rank
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        cd.cd_purchase_estimate IS NOT NULL
),
RecentReturns AS (
    SELECT 
        sr_returned_date_sk,
        sr_item_sk,
        sr_customer_sk,
        SUM(sr_return_quantity) AS total_returned,
        SUM(sr_return_amt) AS total_return_amt
    FROM 
        store_returns
    GROUP BY 
        sr_returned_date_sk, sr_item_sk, sr_customer_sk
),
HighValueReturns AS (
    SELECT 
        rr.sr_customer_sk,
        COUNT(rr.sr_item_sk) AS count_returns,
        SUM(rr.total_returned) AS sum_items_returned,
        AVG(rr.total_return_amt) AS avg_return_amount
    FROM 
        RecentReturns rr
    WHERE 
        rr.total_returned > 1
    GROUP BY 
        rr.sr_customer_sk
),
IncomeBandAnalysis AS (
    SELECT 
        hd.hd_demo_sk,
        ib.ib_income_band_sk,
        (CASE
            WHEN ib.ib_lower_bound IS NOT NULL AND ib.ib_upper_bound IS NOT NULL THEN 
                (ib.ib_lower_bound + ib.ib_upper_bound) / 2.0
            ELSE 
                NULL 
        END) AS average_income
    FROM 
        household_demographics hd
    LEFT JOIN 
        income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
)
SELECT 
    rc.c_first_name,
    rc.c_last_name,
    rc.cd_gender,
    rc.cd_marital_status,
    hv.count_returns,
    hv.sum_items_returned,
    hv.avg_return_amount,
    ia.average_income
FROM 
    RankedCustomers rc
LEFT JOIN 
    HighValueReturns hv ON rc.c_customer_sk = hv.sr_customer_sk
LEFT JOIN 
    IncomeBandAnalysis ia ON rc.c_current_cdemo_sk = ia.hd_demo_sk
WHERE 
    rc.purchase_rank <= 10
    AND (hv.avg_return_amount IS NOT NULL OR ia.average_income IS NOT NULL)
ORDER BY 
    COALESCE(hv.avg_return_amount, 0) DESC,
    rc.c_last_name, rc.c_first_name;
