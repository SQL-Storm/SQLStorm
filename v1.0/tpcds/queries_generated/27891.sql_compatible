
WITH customer_data AS (
    SELECT 
        c.c_customer_id, 
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        CASE 
            WHEN cd.cd_purchase_estimate < 1000 THEN 'Low'
            WHEN cd.cd_purchase_estimate BETWEEN 1000 AND 5000 THEN 'Medium'
            ELSE 'High'
        END AS purchase_level
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
address_data AS (
    SELECT 
        ca.ca_address_id,
        CONCAT(ca.ca_street_number, ' ', ca.ca_street_name, ' ', ca.ca_street_type, 
               COALESCE(CONCAT(' Suite ', ca.ca_suite_number), '')) AS full_address,
        ca.ca_city,
        ca.ca_state
    FROM customer_address ca
),
sales_data AS (
    SELECT 
        ws.ws_order_number, 
        ws.ws_sales_price, 
        ws.ws_ship_mode_sk,
        sm.sm_type AS ship_mode
    FROM web_sales ws
    JOIN ship_mode sm ON ws.ws_ship_mode_sk = sm.sm_ship_mode_sk
),
benchmarking AS (
    SELECT 
        cust.full_name, 
        cust.cd_gender, 
        addr.full_address,
        sales.ws_order_number,
        sales.ws_sales_price,
        sales.ship_mode
    FROM customer_data cust
    JOIN address_data addr ON cust.c_customer_id = addr.ca_address_id
    JOIN sales_data sales ON cust.c_customer_id = sales.ws_order_number
)
SELECT 
    full_name,
    cd_gender,
    full_address,
    SUM(ws_sales_price) AS total_spent,
    COUNT(ws_order_number) AS order_count,
    ARRAY_AGG(DISTINCT ship_mode) AS unique_ship_modes
FROM benchmarking
GROUP BY full_name, cd_gender, full_address
ORDER BY total_spent DESC
LIMIT 100;
