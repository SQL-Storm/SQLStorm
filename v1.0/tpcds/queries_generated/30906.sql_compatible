
WITH RECURSIVE SalesHistory AS (
    SELECT 
        ss_sold_date_sk,
        ss_item_sk,
        ss_net_profit,
        1 AS level
    FROM 
        store_sales
    WHERE 
        ss_net_profit > 100
    UNION ALL
    SELECT 
        sh.ss_sold_date_sk,
        sh.ss_item_sk,
        sh.ss_net_profit + (0.1 * sh.ss_net_profit) AS ss_net_profit,
        sh.level + 1
    FROM 
        SalesHistory sh
    JOIN 
        store_sales s ON sh.ss_item_sk = s.ss_item_sk
    WHERE 
        sh.level < 5
)

SELECT 
    ca.ca_city,
    COUNT(DISTINCT c.c_customer_sk) AS num_customers,
    SUM(ws.ws_net_profit) AS total_profit,
    AVG(cd.cd_purchase_estimate) AS avg_purchase_estimate,
    MAX(ss_ext_discount_amt) AS max_discount_amt
FROM 
    customer c
JOIN 
    customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
LEFT JOIN 
    web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
LEFT JOIN 
    SalesHistory sh ON ws.ws_item_sk = sh.ss_item_sk
LEFT JOIN 
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
WHERE 
    ca.ca_state = 'CA'
    AND (ws.ws_net_profit IS NULL OR ws.ws_net_profit > 500)
    AND (cd.cd_gender = 'F' OR cd.cd_marital_status = 'M')
GROUP BY 
    ca.ca_city,
    cd.cd_purchase_estimate,
    ss_ext_discount_amt
HAVING 
    total_profit > 10000
ORDER BY 
    num_customers DESC
LIMIT 10;
