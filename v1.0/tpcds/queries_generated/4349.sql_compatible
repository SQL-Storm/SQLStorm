
WITH RankedSales AS (
    SELECT 
        ws.web_site_sk,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        RANK() OVER (PARTITION BY ws.web_site_sk ORDER BY SUM(ws.ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        web_site w ON ws.ws_web_site_sk = w.web_site_sk
    WHERE 
        ws.ws_sold_date_sk IN (SELECT d_date_sk FROM date_dim WHERE d_year = 2022)
    GROUP BY 
        ws.web_site_sk
),
CustomerReturns AS (
    SELECT 
        sr.sr_returning_customer_sk,
        SUM(sr.sr_return_quantity) AS total_returns,
        COUNT(DISTINCT sr.sr_returned_date_sk) AS return_days
    FROM 
        store_returns sr
    WHERE 
        sr.sr_returned_date_sk IN (SELECT d_date_sk FROM date_dim WHERE d_year = 2022)
    GROUP BY 
        sr.sr_returning_customer_sk
)
SELECT 
    c.c_customer_id,
    c.c_first_name,
    c.c_last_name,
    COALESCE(r.total_sales, 0) AS total_sales,
    COALESCE(customer_returns.total_returns, 0) AS total_returns,
    r.sales_rank
FROM 
    customer c
LEFT JOIN 
    RankedSales r ON c.c_customer_sk = r.web_site_sk
LEFT JOIN 
    CustomerReturns customer_returns ON c.c_customer_sk = customer_returns.sr_returning_customer_sk
WHERE 
    (r.sales_rank = 1 OR customer_returns.return_days > 0)
ORDER BY 
    total_sales DESC, c.c_last_name ASC, c.c_first_name ASC;
