
WITH customer_info AS (
    SELECT 
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating,
        cd.cd_dep_count,
        c.c_customer_sk
    FROM customer c
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
sales_data AS (
    SELECT
        ws.web_site_id,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM web_sales ws
    JOIN customer_info ci ON ws.ws_bill_customer_sk = ci.c_customer_sk
    GROUP BY ws.web_site_id
),
customer_distribution AS (
    SELECT
        ci.ca_state,
        COUNT(DISTINCT ci.full_name) AS num_customers,
        AVG(ci.cd_purchase_estimate) AS avg_purchase_estimate,
        SUM(CASE WHEN ci.cd_gender = 'F' THEN 1 ELSE 0 END) AS female_customers,
        SUM(CASE WHEN ci.cd_gender = 'M' THEN 1 ELSE 0 END) AS male_customers
    FROM customer_info ci
    GROUP BY ci.ca_state
)
SELECT
    sd.web_site_id,
    sd.total_profit,
    sd.total_orders,
    cd.ca_state,
    cd.num_customers,
    cd.avg_purchase_estimate,
    cd.female_customers,
    cd.male_customers
FROM sales_data sd
JOIN customer_distribution cd ON 1=1
ORDER BY sd.total_profit DESC, cd.num_customers DESC;
