
WITH SalesData AS (
    SELECT 
        ss_store_sk AS store_id,
        SUM(ss_sales_price) AS total_sales,
        COUNT(DISTINCT ss_ticket_number) AS total_transactions,
        AVG(ss_sales_price) AS avg_sales_price,
        EXTRACT(YEAR FROM d_date) AS sales_year,
        EXTRACT(MONTH FROM d_date) AS sales_month
    FROM 
        store_sales
    JOIN 
        date_dim ON ss_sold_date_sk = d_date_sk
    JOIN 
        store ON ss_store_sk = s_store_sk
    WHERE 
        d_date >= DATE '2023-01-01' AND d_date < DATE '2023-12-31'
    GROUP BY 
        ss_store_sk, EXTRACT(YEAR FROM d_date), EXTRACT(MONTH FROM d_date)
),
RankedSales AS (
    SELECT 
        store_id,
        total_sales,
        total_transactions,
        avg_sales_price,
        sales_year,
        sales_month,
        ROW_NUMBER() OVER (PARTITION BY sales_year ORDER BY total_sales DESC) AS sales_rank
    FROM 
        SalesData
)
SELECT 
    s.store_id,
    s.total_sales,
    s.total_transactions,
    s.avg_sales_price,
    s.sales_year,
    s.sales_month,
    r.sales_rank,
    c.c_first_name,
    c.c_last_name,
    c.c_email_address
FROM 
    RankedSales s
JOIN 
    customer c ON s.store_id = c.c_current_addr_sk
WHERE 
    s.sales_rank <= 5
ORDER BY 
    s.sales_year, s.sales_month, s.sales_rank;
