
WITH address_info AS (
    SELECT 
        ca.ca_address_id,
        CONCAT(ca.ca_street_number, ' ', ca.ca_street_name, ' ', ca.ca_street_type, 
               CASE WHEN ca.ca_suite_number IS NOT NULL THEN CONCAT(' Suite ', ca.ca_suite_number) ELSE '' END) AS full_address,
        ca.ca_city,
        ca.ca_state,
        ca.ca_zip,
        ca.ca_country
    FROM customer_address ca
),
customer_info AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS customer_name,
        d.d_date AS last_purchase_date
    FROM customer c
    JOIN date_dim d ON c.c_first_sales_date_sk = d.d_date_sk
),
sales_info AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_sold_date_sk,
        SUM(ws.ws_sales_price) AS total_sales
    FROM web_sales ws
    GROUP BY ws.ws_order_number, ws.ws_sold_date_sk
)
SELECT 
    ci.customer_name,
    ai.full_address,
    ai.ca_city,
    ai.ca_state,
    ai.ca_zip,
    ai.ca_country,
    SUM(si.total_sales) AS total_sales,
    COUNT(si.ws_order_number) AS order_count
FROM customer_info ci
JOIN address_info ai ON ci.c_customer_id = ai.ca_address_id
LEFT JOIN sales_info si ON ci.last_purchase_date = si.ws_sold_date_sk
GROUP BY 
    ci.customer_name, 
    ai.full_address, 
    ai.ca_city, 
    ai.ca_state, 
    ai.ca_zip, 
    ai.ca_country
ORDER BY total_sales DESC
FETCH FIRST 100 ROWS ONLY;
