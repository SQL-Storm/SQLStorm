
WITH ranked_sales AS (
    SELECT 
        ws_item_sk, 
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_net_paid_inc_tax) AS total_revenue,
        DENSE_RANK() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_net_paid_inc_tax) DESC) AS revenue_rank
    FROM 
        web_sales
    GROUP BY 
        ws_item_sk
), 
item_details AS (
    SELECT 
        i.i_item_sk, 
        i.i_item_desc, 
        i.i_brand, 
        i.i_current_price,
        inv.inv_quantity_on_hand
    FROM 
        item i
    LEFT JOIN 
        inventory inv ON i.i_item_sk = inv.inv_item_sk
    WHERE 
        i.i_rec_start_date <= DATE '2002-10-01' AND 
        (i.i_rec_end_date IS NULL OR i.i_rec_end_date > DATE '2002-10-01')
), 
customer_data AS (
    SELECT 
        c.c_customer_sk, 
        cd.cd_gender, 
        cd.cd_income_band_sk,
        cd.cd_marital_status
    FROM 
        customer c
    INNER JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
), 
promotions AS (
    SELECT 
        p.p_promo_sk, 
        p.p_promo_name
    FROM 
        promotion p
    WHERE 
        p.p_discount_active = 'Y'
)
SELECT 
    id.i_item_desc,
    id.i_brand,
    id.i_current_price,
    rs.total_quantity,
    rs.total_revenue,
    cd.cd_gender,
    cd.cd_marital_status,
    COALESCE(p.p_promo_name, 'No Promotion') AS promotion_name
FROM 
    ranked_sales rs
JOIN 
    item_details id ON rs.ws_item_sk = id.i_item_sk
JOIN 
    customer_data cd ON rs.ws_item_sk IN (SELECT ws_item_sk FROM web_sales WHERE ws_bill_customer_sk IN (SELECT c_customer_sk FROM customer))
LEFT JOIN 
    promotions p ON rs.ws_item_sk IN (SELECT wp_web_page_sk FROM web_page WHERE wp_customer_sk = cd.c_customer_sk)
WHERE 
    rs.revenue_rank <= 5 
    AND id.inv_quantity_on_hand > 0 
    AND (cd.cd_income_band_sk IS NULL OR cd.cd_income_band_sk BETWEEN 1 AND 5)
ORDER BY 
    rs.total_revenue DESC;
