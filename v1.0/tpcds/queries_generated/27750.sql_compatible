
WITH CustomerAddresses AS (
    SELECT
        ca_address_id,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type, 
               COALESCE(CONCAT(' Suite ', ca_suite_number), ''), ', ',
               ca_city, ', ', ca_state, ' ', ca_zip) AS full_address
    FROM customer_address
),
Demographics AS (
    SELECT
        cd_demo_sk,
        cd_gender,
        cd_marital_status,
        cd_education_status,
        CONCAT(cd_gender, ', ', cd_marital_status, ', ', cd_education_status) AS demographic_profile
    FROM customer_demographics
),
CustomerFullDetails AS (
    SELECT
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        ca.full_address,
        d.demographic_profile
    FROM customer c
    JOIN CustomerAddresses ca ON c.c_current_addr_sk = ca.ca_address_id
    JOIN Demographics d ON c.c_current_cdemo_sk = d.cd_demo_sk
),
DateDetails AS (
    SELECT 
        d.d_date,
        d.d_year,
        d.d_month_seq,
        d.d_quarter_seq,
        d.d_day_name
    FROM date_dim d
    WHERE d.d_year >= 2020
),
SalesStatistics AS (
    SELECT
        ws_bill_customer_sk,
        SUM(ws_sales_price) AS total_sales,
        COUNT(ws_order_number) AS total_orders
    FROM web_sales
    GROUP BY ws_bill_customer_sk
),
CombinedData AS (
    SELECT
        cf.full_name,
        cf.full_address,
        cf.demographic_profile,
        ds.d_date,
        ds.d_year,
        ss.total_sales,
        ss.total_orders
    FROM CustomerFullDetails cf
    JOIN SalesStatistics ss ON cf.c_customer_id = ss.ws_bill_customer_sk
    CROSS JOIN DateDetails ds 
    WHERE ds.d_year = 2023
)
SELECT
    full_name,
    full_address,
    demographic_profile,
    d_date,
    total_sales,
    total_orders
FROM CombinedData
WHERE total_sales IS NOT NULL
ORDER BY total_sales DESC
LIMIT 100;
