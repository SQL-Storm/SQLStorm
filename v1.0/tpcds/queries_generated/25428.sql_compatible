
WITH customer_data AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        d.d_date AS birth_date,
        cd.cd_gender,
        cd.cd_marital_status,
        ca.ca_city,
        ca.ca_state
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        date_dim d ON c.c_birth_day = d.d_dom AND c.c_birth_month = d.d_moy
)
SELECT 
    cd.full_name,
    cd.cd_gender,
    cd.cd_marital_status,
    COUNT(ws.ws_order_number) AS total_orders,
    SUM(ws.ws_sales_price) AS total_spent,
    STRING_AGG(CASE WHEN cs.cs_item_sk IS NOT NULL THEN i.i_item_desc END, ', ') AS purchased_items
FROM 
    customer_data cd
LEFT JOIN 
    web_sales ws ON cd.c_customer_sk = ws.ws_bill_customer_sk
LEFT JOIN 
    catalog_sales cs ON cd.c_customer_sk = cs.cs_bill_customer_sk
LEFT JOIN 
    item i ON i.i_item_sk = cs.cs_item_sk OR i.i_item_sk = ws.ws_item_sk
GROUP BY 
    cd.full_name, cd.cd_gender, cd.cd_marital_status
HAVING 
    COUNT(ws.ws_order_number) > 0
ORDER BY 
    total_spent DESC
FETCH FIRST 100 ROWS ONLY;
