
WITH RankedSales AS (
    SELECT 
        ws.web_site_sk,
        ws.ws_sold_date_sk,
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_profit) AS total_net_profit,
        DENSE_RANK() OVER (PARTITION BY ws.web_site_sk ORDER BY SUM(ws.ws_net_profit) DESC) AS revenue_rank
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        i.i_current_price > 0 AND 
        (i.i_item_desc LIKE '%special%' OR i.i_brand = 'BrandX')
    GROUP BY 
        ws.web_site_sk, ws.ws_sold_date_sk, ws.ws_item_sk
), MaxReturns AS (
    SELECT 
        sr_item_sk, 
        SUM(sr_return_quantity) AS total_returns
    FROM 
        store_returns
    GROUP BY 
        sr_item_sk
), WebReturnDetails AS (
    SELECT 
        wr.wr_item_sk,
        COUNT(wr.wr_return_number) AS num_returns,
        COALESCE(MAX(wr.wr_return_amt), 0) AS max_return_amt,
        COALESCE(SUM(wr.wr_return_tax), 0) AS total_return_tax
    FROM 
        web_returns wr
    GROUP BY 
        wr.wr_item_sk
)
SELECT 
    COALESCE(RS.web_site_sk, 0) AS web_site_sk,
    COALESCE(MR.total_returns, 0) AS returned_quantity,
    RS.total_quantity,
    RS.total_net_profit,
    WRD.num_returns,
    WRD.max_return_amt,
    WRD.total_return_tax
FROM 
    RankedSales RS
LEFT JOIN 
    MaxReturns MR ON RS.ws_item_sk = MR.sr_item_sk
LEFT JOIN 
    WebReturnDetails WRD ON RS.ws_item_sk = WRD.wr_item_sk
WHERE 
    RS.revenue_rank = 1
    AND RS.total_net_profit > 1000
    AND (MR.total_returns IS NULL OR MR.total_returns < 10 OR RS.total_net_profit / NULLIF(MR.total_returns, 0) > 500)
ORDER BY 
    RS.total_net_profit DESC
FETCH FIRST 50 ROWS ONLY

UNION ALL

SELECT 
    ws.web_site_sk,
    NULL AS returned_quantity,
    SUM(ws.ws_quantity) AS total_quantity,
    SUM(ws.ws_net_profit) AS total_net_profit,
    NULL AS num_returns,
    NULL AS max_return_amt,
    NULL AS total_return_tax
FROM 
    web_sales ws
JOIN 
    item i ON ws.ws_item_sk = i.i_item_sk
WHERE 
    i.i_size IS NULL
GROUP BY 
    ws.web_site_sk
HAVING 
    SUM(ws.ws_net_profit) < 0
ORDER BY 
    total_net_profit DESC;
