
WITH RECURSIVE sales_data AS (
    SELECT 
        ws_order_number,
        ws_item_sk,
        ws_sales_price,
        ws_quantity,
        ws_ext_sales_price,
        ws_net_profit,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY ws_order_number DESC) AS rn
    FROM 
        web_sales
    WHERE 
        ws_sales_price > 0
),
customer_sales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(sd.ws_ext_sales_price) AS total_spent,
        COUNT(DISTINCT sd.ws_order_number) AS order_count,
        AVG(sd.ws_net_profit) AS avg_net_profit
    FROM 
        customer c
    JOIN sales_data sd ON c.c_customer_sk = sd.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
high_value_customers AS (
    SELECT 
        c.*,
        CASE 
            WHEN total_spent > 5000 THEN 'Gold'
            WHEN total_spent BETWEEN 2000 AND 5000 THEN 'Silver'
            ELSE 'Bronze'
        END AS value_tier
    FROM 
        customer_sales c
),
date_summary AS (
    SELECT 
        d.d_year,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM 
        date_dim d 
    JOIN web_sales ws ON d.d_date_sk = ws.ws_sold_date_sk
    GROUP BY 
        d.d_year
)
SELECT 
    hvc.value_tier,
    hvc.c_first_name,
    hvc.c_last_name,
    hvc.total_spent,
    hvc.order_count,
    ds.total_sales,
    ds.total_orders
FROM 
    high_value_customers hvc
FULL OUTER JOIN 
    date_summary ds ON hvc.total_spent > 2000
WHERE 
    hvc.order_count > 5 OR ds.total_sales IS NOT NULL
ORDER BY 
    hvc.total_spent DESC, ds.d_year DESC;
