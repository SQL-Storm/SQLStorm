
WITH annual_sales AS (
    SELECT 
        ws_sold_date_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws_order_number) AS order_count
    FROM 
        web_sales
    GROUP BY 
        ws_sold_date_sk
), 
demographic_analysis AS (
    SELECT 
        cd_gender,
        COUNT(DISTINCT c_customer_sk) AS gender_count,
        AVG(cd_purchase_estimate) AS avg_purchase_estimate
    FROM 
        customer
    JOIN 
        customer_demographics ON c_current_cdemo_sk = cd_demo_sk
    GROUP BY 
        cd_gender
), 
sales_rank AS (
    SELECT 
        ws_sold_date_sk,
        total_sales,
        ROW_NUMBER() OVER (PARTITION BY EXTRACT(YEAR FROM d_date) ORDER BY total_sales DESC) AS sales_rank
    FROM 
        annual_sales 
    JOIN 
        date_dim ON ws_sold_date_sk = d_date_sk
)
SELECT 
    d.d_date,
    da.cd_gender,
    s.total_sales,
    COALESCE(s.sales_rank, 'No Sale') AS sales_rank,
    da.avg_purchase_estimate
FROM 
    date_dim d
LEFT JOIN 
    sales_rank s ON d.d_date_sk = s.ws_sold_date_sk
FULL OUTER JOIN 
    demographic_analysis da ON da.gender_count > 0
WHERE 
    d.d_year = 2001 
    AND (s.total_sales > (SELECT AVG(total_sales) FROM annual_sales) OR da.gender_count IS NULL)
ORDER BY 
    d.d_date ASC, 
    CASE WHEN da.cd_gender IS NULL THEN 1 ELSE 0 END, 
    da.gender_count DESC;
