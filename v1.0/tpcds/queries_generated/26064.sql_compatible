
WITH customer_info AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_salutation, ' ', c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country,
        ca.ca_zip
    FROM 
        customer AS c
    JOIN 
        customer_demographics AS cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address AS ca ON c.c_current_addr_sk = ca.ca_address_sk
), 
sales_info AS (
    SELECT 
        ws.ws_bill_customer_sk,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count
    FROM 
        web_sales AS ws
    GROUP BY 
        ws.ws_bill_customer_sk
), 
ranked_sales AS (
    SELECT 
        c.c_customer_id,
        cs.total_sales,
        cs.order_count,
        ROW_NUMBER() OVER (ORDER BY cs.total_sales DESC) AS sales_rank
    FROM 
        customer_info AS c
    JOIN 
        sales_info AS cs ON c.c_customer_id = cs.ws_bill_customer_sk
)
SELECT 
    r.full_name,
    r.total_sales,
    r.order_count,
    r.sales_rank,
    CASE 
        WHEN r.sales_rank <= 10 THEN 'Top 10 Customers'
        WHEN r.sales_rank <= 50 THEN 'Top 50 Customers'
        ELSE 'Other Customers'
    END AS customer_category
FROM 
    ranked_sales AS r
WHERE 
    r.total_sales > 1000
ORDER BY 
    r.sales_rank;
