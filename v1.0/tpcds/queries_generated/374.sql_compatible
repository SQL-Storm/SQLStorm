
WITH RankedSales AS (
    SELECT
        ws.bill_customer_sk,
        SUM(ws.ws_net_profit) AS total_profit,
        RANK() OVER (PARTITION BY ws.bill_customer_sk ORDER BY SUM(ws.ws_net_profit) DESC) AS rank_profit
    FROM
        web_sales ws
    JOIN
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    WHERE
        c.c_birth_year BETWEEN 1980 AND 1990
    GROUP BY
        ws.bill_customer_sk
),
BestCustomers AS (
    SELECT
        r.bill_customer_sk,
        r.total_profit,
        cd.cd_gender,
        cd.cd_marital_status
    FROM
        RankedSales r
    JOIN
        customer_demographics cd ON r.bill_customer_sk = cd.cd_demo_sk
    WHERE
        r.rank_profit <= 5
)
SELECT
    b.bill_customer_sk,
    b.total_profit,
    b.cd_gender,
    b.cd_marital_status,
    COUNT(DISTINCT ws.ws_order_number) AS order_count,
    COALESCE(SUM(ws.ws_ext_discount_amt), 0) AS total_discounts,
    COUNT(ws.ws_item_sk) FILTER (WHERE ws.ws_net_profit > 0) AS positive_items
FROM
    BestCustomers b
LEFT JOIN
    web_sales ws ON b.bill_customer_sk = ws.ws_bill_customer_sk
GROUP BY
    b.bill_customer_sk, b.total_profit, b.cd_gender, b.cd_marital_status
HAVING
    SUM(ws.ws_net_profit) > 1000
ORDER BY
    total_profit DESC;
