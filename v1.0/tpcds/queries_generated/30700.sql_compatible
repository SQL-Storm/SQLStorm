
WITH RECURSIVE sales_hierarchy AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_profit) AS total_sales,
        RANK() OVER (PARTITION BY c.c_customer_id ORDER BY SUM(ws.ws_net_profit) DESC) AS rank
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id
    HAVING 
        SUM(ws.ws_net_profit) > 1000
),
high_value_customers AS (
    SELECT 
        c.c_first_name, 
        c.c_last_name, 
        cd.cd_gender,
        hd.hd_income_band_sk,
        RANK() OVER (PARTITION BY cd.cd_gender ORDER BY SUM(ws.ws_net_profit) DESC) AS gender_rank
    FROM 
        sales_hierarchy sh
    JOIN 
        customer c ON sh.c_customer_id = c.c_customer_id
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        household_demographics hd ON hd.hd_demo_sk = cd.cd_demo_sk
    GROUP BY 
        c.c_first_name, c.c_last_name, cd.cd_gender, hd.hd_income_band_sk
),
top_customers AS (
    SELECT * 
    FROM high_value_customers 
    WHERE gender_rank <= 5
)
SELECT 
    CONCAT(t1.c_first_name, ' ', t1.c_last_name) AS full_name, 
    COALESCE(t2.hd_income_band_sk, 0) AS income_band,
    COUNT(DISTINCT ws.ws_order_number) AS num_orders,
    MAX(ws.ws_net_paid) AS highest_order,
    SUM(ws.ws_net_profit) AS total_profit
FROM 
    top_customers t1
JOIN 
    web_sales ws ON t1.c_customer_id = ws.ws_bill_customer_sk
LEFT JOIN 
    household_demographics t2 ON t2.hd_demo_sk = t1.hd_income_band_sk
GROUP BY 
    t1.c_first_name, t1.c_last_name, t2.hd_income_band_sk
ORDER BY 
    total_profit DESC
LIMIT 10;
