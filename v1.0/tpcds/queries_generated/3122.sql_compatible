
WITH RankedCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_gender, cd.cd_marital_status ORDER BY c.c_birth_year DESC) AS rank
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        cd.cd_purchase_estimate > 5000
),
ProductReturns AS (
    SELECT 
        wr_returning_customer_sk,
        SUM(wr_return_amt) AS total_return_amount,
        COUNT(DISTINCT wr_order_number) AS return_count
    FROM 
        web_returns
    GROUP BY 
        wr_returning_customer_sk
),
SalesData AS (
    SELECT 
        ws_ship_date_sk,
        ws_item_sk,
        SUM(ws_sales_price) AS total_sales
    FROM 
        web_sales
    WHERE 
        ws_ship_date_sk BETWEEN 2458204 AND 2458530 
    GROUP BY 
        ws_ship_date_sk, ws_item_sk
)

SELECT 
    rc.c_first_name,
    rc.c_last_name,
    rc.cd_gender,
    rc.cd_marital_status,
    COALESCE(pr.total_return_amount, CAST(0 AS decimal)) AS total_return_amount,
    COALESCE(pr.return_count, CAST(0 AS integer)) AS return_count,
    CASE 
        WHEN COALESCE(pr.return_count, 0) > 5 THEN 'Frequent Returner'
        ELSE 'Occasional Returner'
    END AS returner_type,
    STRING_AGG(DISTINCT CAST(cs.cs_item_sk AS varchar), ', ') AS purchased_items
FROM 
    RankedCustomers rc
LEFT JOIN 
    ProductReturns pr ON rc.c_customer_sk = pr.wr_returning_customer_sk
JOIN 
    SalesData sd ON sd.ws_item_sk IN (SELECT DISTINCT sr_item_sk FROM store_sales WHERE ss_customer_sk = rc.c_customer_sk)
GROUP BY 
    rc.c_first_name, rc.c_last_name, rc.cd_gender, rc.cd_marital_status, pr.total_return_amount, pr.return_count
ORDER BY 
    total_return_amount DESC;
