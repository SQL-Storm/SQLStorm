
WITH RECURSIVE sales_cte AS (
    SELECT 
        ws_order_number, 
        SUM(ws_ext_sales_price) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY ws_order_number ORDER BY ws_sold_date_sk) AS rn
    FROM 
        web_sales
    GROUP BY 
        ws_order_number
), customer_info AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        COALESCE(SUM(ws.ws_net_profit), 0) AS total_profit,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        AVG(ws.ws_quantity) AS avg_quantity
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status
), filtered_sales AS (
    SELECT 
        s.ws_order_number AS order_number, 
        s.total_sales,
        ci.c_customer_id,
        ci.total_profit,
        ci.order_count,
        ci.avg_quantity,
        RANK() OVER (ORDER BY s.total_sales DESC) AS sales_rank
    FROM 
        sales_cte s
    JOIN 
        customer_info ci ON s.ws_order_number = ci.c_customer_id
)
SELECT 
    ci.c_customer_id, 
    ci.c_first_name, 
    ci.c_last_name, 
    ci.total_profit,
    ci.order_count,
    ci.avg_quantity,
    fs.total_sales,
    fs.sales_rank
FROM 
    customer_info ci
JOIN 
    filtered_sales fs ON ci.order_count > 0 AND fs.c_customer_id = ci.c_customer_id
ORDER BY 
    fs.sales_rank, ci.c_last_name;
