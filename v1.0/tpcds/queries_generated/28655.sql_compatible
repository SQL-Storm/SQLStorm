
WITH processed_addresses AS (
    SELECT 
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_country
    FROM 
        customer_address
    WHERE 
        ca_country = 'USA'
),
customer_info AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        c.c_email_address,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band_sk,
        hd.hd_dep_count,
        hd.hd_vehicle_count
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
),
sales_data AS (
    SELECT
        ws.ws_sold_date_sk,
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS total_orders,
        ws.ws_bill_customer_sk
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_sold_date_sk, ws.ws_bill_customer_sk
),
final_benchmark AS (
    SELECT 
        a.full_address,
        ci.full_name,
        ci.c_email_address,
        ci.cd_gender,
        ci.cd_marital_status,
        sd.total_sales,
        sd.total_orders,
        a.ca_city,
        a.ca_state
    FROM 
        processed_addresses a
    JOIN 
        customer_info ci ON ci.c_customer_sk IN (
            SELECT 
                sr.sr_customer_sk 
            FROM 
                store_returns sr WHERE sr.returned_date_sk IS NOT NULL
        )
    JOIN 
        sales_data sd ON sd.ws_bill_customer_sk = ci.c_customer_sk
)
SELECT
    CONCAT(full_name, ' from ', full_address) AS customer_full_info,
    total_sales,
    total_orders,
    ca_city,
    ca_state
FROM 
    final_benchmark
WHERE 
    total_sales > 1000
ORDER BY 
    total_sales DESC;
