
WITH RankedReturns AS (
    SELECT 
        sr_returned_date_sk,
        sr_return_time_sk,
        sr_item_sk,
        sr_customer_sk,
        sr_return_quantity,
        ROW_NUMBER() OVER (PARTITION BY sr_item_sk ORDER BY sr_returned_date_sk DESC) AS rnk
    FROM store_returns
),
CustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        c.c_preferred_cust_flag,
        cd.cd_gender,
        cd.cd_marital_status,
        ca.ca_country
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    WHERE ca.ca_country IS NOT NULL
),
HighVolumeSales AS (
    SELECT 
        ws.item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        MAX(ws.ws_sales_price) AS max_price
    FROM web_sales ws
    WHERE ws.ws_sold_date_sk BETWEEN 2450000 AND 2450300
    GROUP BY ws.item_sk
    HAVING SUM(ws.ws_quantity) > 100
),
PromotionalItems AS (
    SELECT 
        p.p_item_sk,
        p.p_promo_id,
        p.p_promo_name,
        COALESCE(SUM(CASE WHEN s.ss_sales_price < 10 THEN 1 ELSE 0 END), 0) AS low_price_hints
    FROM promotion p
    LEFT JOIN store_sales s ON p.p_item_sk = s.ss_item_sk
    GROUP BY p.p_item_sk, p.p_promo_id, p.p_promo_name
    HAVING COALESCE(SUM(CASE WHEN s.ss_sales_price < 10 THEN 1 ELSE 0 END), 0) > 0
),
AggregatedStats AS (
    SELECT 
        ci.ca_country,
        SUM(r.sr_return_quantity) AS total_returns,
        COUNT(DISTINCT ci.c_customer_sk) AS unique_customers
    FROM RankedReturns r
    JOIN CustomerInfo ci ON r.sr_customer_sk = ci.c_customer_sk
    GROUP BY ci.ca_country
)
SELECT 
    a.ca_country,
    a.total_returns,
    a.unique_customers,
    ph.p_promo_name,
    hv.total_quantity,
    hv.order_count,
    hv.max_price,
    COALESCE(NULLIF(a.total_returns / NULLIF(hv.total_quantity, 0), 0), 0) AS returns_per_item
FROM AggregatedStats a
LEFT JOIN PromotionalItems ph ON a.total_returns > 0
LEFT JOIN HighVolumeSales hv ON hv.item_sk IN (SELECT sr_item_sk FROM store_returns WHERE sr_returned_date_sk = a.total_returns)
WHERE a.unique_customers > 5
ORDER BY a.total_returns DESC, a.ca_country ASC;
