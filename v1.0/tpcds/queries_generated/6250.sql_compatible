
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id, 
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        COUNT(DISTINCT ws.ws_item_sk) AS item_count
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id
),
TopCustomers AS (
    SELECT 
        c.c_customer_id AS customer_id, 
        cs.total_sales, 
        cs.order_count, 
        cs.item_count,
        ROW_NUMBER() OVER (ORDER BY cs.total_sales DESC) AS rank
    FROM 
        CustomerSales cs
    JOIN 
        customer c ON cs.c_customer_id = c.c_customer_id
)
SELECT 
    tc.customer_id,
    tc.total_sales,
    tc.order_count,
    tc.item_count,
    d.d_year,
    d.d_month_seq,
    AVG(tc.total_sales) OVER (PARTITION BY d.d_year) AS avg_sales_year,
    AVG(tc.order_count) OVER (PARTITION BY d.d_year) AS avg_orders_year
FROM 
    TopCustomers tc
JOIN 
    date_dim d ON d.d_date_sk = (SELECT MAX(ws.ws_sold_date_sk)
                                  FROM web_sales ws
                                  WHERE ws.ws_bill_customer_sk = tc.customer_id)
WHERE 
    tc.rank <= 10
ORDER BY 
    tc.total_sales DESC;
