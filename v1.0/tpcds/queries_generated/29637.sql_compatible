
WITH AddressStatistics AS (
    SELECT 
        ca_state,
        COUNT(*) AS address_count,
        STRING_AGG(ca_city, ', ') AS cities,
        STRING_AGG(DISTINCT ca_street_name, ', ') AS street_names
    FROM 
        customer_address
    GROUP BY 
        ca_state
),
CustomerDemographics AS (
    SELECT 
        cd_gender,
        COUNT(*) AS demographic_count,
        STRING_AGG(CONCAT(cd_education_status, ': ', cd_purchase_estimate), ', ') AS education_purchase_stats
    FROM 
        customer_demographics
    GROUP BY 
        cd_gender
),
SalesAnalysis AS (
    SELECT 
        d.d_year,
        SUM(ws_ext_sales_price) AS total_sales,
        SUM(ws_quantity) AS total_units_sold
    FROM 
        web_sales
    JOIN 
        date_dim d ON ws_sold_date_sk = d.d_date_sk
    GROUP BY 
        d.d_year
),
FinalBenchmark AS (
    SELECT 
        a.ca_state,
        a.address_count,
        a.cities,
        c.cd_gender,
        c.demographic_count,
        c.education_purchase_stats,
        s.d_year,
        s.total_sales,
        s.total_units_sold
    FROM 
        AddressStatistics a
    JOIN 
        CustomerDemographics c ON a.ca_state IS NOT NULL
    JOIN 
        SalesAnalysis s ON s.total_sales IS NOT NULL
    ORDER BY 
        a.address_count DESC, 
        c.demographic_count DESC
)
SELECT 
    *
FROM 
    FinalBenchmark
FETCH FIRST 100 ROWS ONLY;
