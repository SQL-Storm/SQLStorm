
WITH RankedReturns AS (
    SELECT 
        wr.returning_customer_sk,
        wr.return_quantity,
        wr.return_amt,
        wr.return_tax,
        RANK() OVER (PARTITION BY wr.returning_customer_sk ORDER BY wr.returned_date_sk DESC) AS return_rank
    FROM 
        web_returns wr
    WHERE 
        wr.return_quantity > 0
        AND wr.return_amt IS NOT NULL
),

CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        COALESCE(cd.cd_dep_count, 0) AS dep_count
    FROM 
        customer_demographics cd
    WHERE 
        cd.cd_gender IN ('M', 'F')
),

SalesSummary AS (
    SELECT 
        ws.ws_bill_customer_sk,
        SUM(ws.ws_sales_price) AS total_sales,
        SUM(ws.ws_net_profit) AS total_profit
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_bill_customer_sk
),

CustomerWithReturns AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        COALESCE(rr.total_sales_returned, 0) AS total_sales_returned,
        COALESCE(rs.total_sales, 0) AS total_sales,
        COALESCE(rs.total_profit, 0) AS total_profit
    FROM 
        customer c
    LEFT JOIN 
        (SELECT 
            returning_customer_sk,
            SUM(return_quantity * return_amt) AS total_sales_returned
         FROM 
            RankedReturns
         GROUP BY 
            returning_customer_sk) rr ON c.c_customer_sk = rr.returning_customer_sk
    LEFT JOIN 
        SalesSummary rs ON c.c_customer_sk = rs.ws_bill_customer_sk
)

SELECT 
    cw.c_customer_sk,
    cw.c_first_name,
    cw.c_last_name,
    cw.total_sales_returned,
    cw.total_sales,
    cw.total_profit,
    cd.cd_marital_status,
    cd.dep_count,
    CASE 
        WHEN cw.total_profit / NULLIF(cw.total_sales, 0) > 0.1 THEN 'Profitable Customer'
        ELSE 'Needs Attention'
    END AS customer_status
FROM 
    CustomerWithReturns cw
JOIN 
    CustomerDemographics cd ON cw.c_customer_sk = cd.cd_demo_sk
WHERE 
    cw.total_sales > 500
    AND cd.cd_gender = 'M'
    AND (cw.total_sales_returned IS NULL OR cw.total_sales_returned < 0)
ORDER BY 
    cw.total_profit DESC
LIMIT 10;
