WITH item_sales AS (
    SELECT
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_sales_price) AS total_sales,
        COUNT(DISTINCT ws_order_number) AS order_count,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_sales_price) DESC) AS sales_rank
    FROM
        web_sales
    WHERE
        ws_sold_date_sk BETWEEN 2458187 AND 2458311 
    GROUP BY
        ws_item_sk
),
top_items AS (
    SELECT
        i.i_item_id,
        i.i_item_desc,
        is.total_quantity,
        is.total_sales,
        is.order_count
    FROM
        item i
    JOIN item_sales is ON i.i_item_sk = is.ws_item_sk
    WHERE
        is.sales_rank <= 10
),
customer_info AS (
    SELECT
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY cd.cd_purchase_estimate DESC) AS customer_rank
    FROM
        customer c
    LEFT JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
sales_summary AS (
    SELECT
        ci.c_customer_id,
        ci.c_first_name,
        ci.c_last_name,
        ci.cd_gender,
        ci.cd_marital_status,
        ci.cd_purchase_estimate,
        ti.i_item_id,
        ti.i_item_desc,
        ti.total_quantity,
        ti.total_sales
    FROM
        customer_info ci
    LEFT JOIN top_items ti ON ci.c_customer_sk IN (
        SELECT 
            DISTINCT ws_bill_customer_sk 
        FROM 
            web_sales 
        WHERE 
            ws_item_sk IN (SELECT ws_item_sk FROM item_sales WHERE sales_rank <= 10)
    )
)
SELECT
    ss.c_customer_id,
    ss.c_first_name,
    ss.c_last_name,
    ss.cd_gender,
    ss.cd_marital_status,
    ss.cd_purchase_estimate,
    SUM(ss.total_sales) AS total_sales_amount,
    CASE
        WHEN SUM(ss.total_sales) > 1000 THEN 'High Value'
        WHEN SUM(ss.total_sales) BETWEEN 500 AND 1000 THEN 'Medium Value'
        ELSE 'Low Value'
    END AS customer_value_category
FROM
    sales_summary ss
GROUP BY
    ss.c_customer_id,
    ss.c_first_name,
    ss.c_last_name,
    ss.cd_gender,
    ss.cd_marital_status,
    ss.cd_purchase_estimate
HAVING
    SUM(ss.total_sales) > 500
ORDER BY
    total_sales_amount DESC;