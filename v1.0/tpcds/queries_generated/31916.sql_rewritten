WITH RECURSIVE SalesTrends AS (
    SELECT
        ws_sold_date_sk,
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_net_profit) AS total_profit,
        1 AS level
    FROM
        web_sales
    GROUP BY
        ws_sold_date_sk, ws_item_sk
    UNION ALL
    SELECT
        DATEADD(DAY, 7, s.ws_sold_date_sk),
        s.ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_net_profit) AS total_profit,
        level + 1
    FROM
        SalesTrends s
    JOIN web_sales ws ON
        s.ws_item_sk = ws.ws_item_sk AND
        ws_sold_date_sk = DATEADD(DAY, 7, s.ws_sold_date_sk)
    GROUP BY
        s.ws_item_sk, level
),
DailySales AS (
    SELECT
        d.d_date,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws_order_number) AS total_orders,
        SUM(ws_ext_discount_amt) AS total_discount
    FROM
        web_sales ws
    JOIN date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY
        d.d_date
),
TopItems AS (
    SELECT
        ws_item_sk,
        SUM(ws_sales_price) AS total_revenue
    FROM
        web_sales
    GROUP BY
        ws_item_sk
    ORDER BY
        total_revenue DESC
    LIMIT 10
)
SELECT 
    ca.ca_city,
    COUNT(DISTINCT c.c_customer_sk) AS customer_count,
    SUM(COALESCE(st.total_profit, 0)) AS total_profit_trends,
    COALESCE(ds.total_sales, 0) AS daily_sales,
    COALESCE(ds.total_orders, 0) AS total_orders_today,
    COALESCE(ds.total_discount, 0) AS total_discount_today,
    COUNT(DISTINCT ti.ws_item_sk) AS top_items_count
FROM 
    customer_address ca
LEFT JOIN 
    customer c ON ca.ca_address_sk = c.c_current_addr_sk
LEFT JOIN 
    SalesTrends st ON c.c_first_sales_date_sk = st.ws_sold_date_sk
LEFT JOIN 
    DailySales ds ON ds.d_date = cast('2002-10-01' as date)
LEFT JOIN 
    TopItems ti ON ti.ws_item_sk IN (SELECT ws_item_sk FROM web_sales WHERE ws_bill_customer_sk = c.c_customer_sk)
GROUP BY 
    ca.ca_city
ORDER BY 
    customer_count DESC, total_profit_trends DESC
LIMIT 20;