
WITH AddressInfo AS (
    SELECT 
        ca_address_sk,
        CONCAT(TRIM(ca_street_number), ' ', TRIM(ca_street_name), ' ', TRIM(ca_street_type), 
               CASE WHEN ca_suite_number IS NOT NULL THEN CONCAT(' Suite ', TRIM(ca_suite_number)) ELSE '' END) AS FullAddress,
        TRIM(ca_city) AS City,
        TRIM(ca_state) AS State,
        TRIM(ca_zip) AS Zip
    FROM 
        customer_address
),
DemographicsInfo AS (
    SELECT 
        cd_demo_sk,
        cd_gender,
        cd_marital_status,
        UPPER(TRIM(cd_education_status)) AS EducationStatus,
        cd_purchase_estimate,
        TRIM(cd_credit_rating) AS CreditRating,
        cd_dep_count,
        cd_dep_employed_count,
        cd_dep_college_count
    FROM 
        customer_demographics
),
SalesInfo AS (
    SELECT 
        ws_item_sk,
        SUM(ws_quantity) AS TotalSalesQuantity,
        SUM(ws_net_paid_inc_tax) AS TotalSalesAmount
    FROM 
        web_sales
    GROUP BY 
        ws_item_sk
),
FullCustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        ai.FullAddress,
        ai.City,
        ai.State,
        ai.Zip,
        di.cd_gender,
        di.EducationStatus,
        si.TotalSalesQuantity,
        si.TotalSalesAmount
    FROM 
        customer c
    JOIN 
        AddressInfo ai ON c.c_current_addr_sk = ai.ca_address_sk
    JOIN 
        DemographicsInfo di ON c.c_current_cdemo_sk = di.cd_demo_sk
    LEFT JOIN 
        SalesInfo si ON c.c_customer_sk = si.ws_item_sk
)
SELECT 
    c.c_customer_id,
    CONCAT(c.c_first_name, ' ', c.c_last_name) AS FullName,
    a.FullAddress,
    a.City,
    a.State,
    a.Zip,
    d.cd_gender,
    d.EducationStatus,
    COALESCE(s.TotalSalesQuantity, 0) AS TotalSalesQuantity,
    COALESCE(s.TotalSalesAmount, 0) AS TotalSalesAmount,
    CASE 
        WHEN COALESCE(s.TotalSalesAmount, 0) > 1000 THEN 'High Value'
        WHEN COALESCE(s.TotalSalesAmount, 0) BETWEEN 500 AND 1000 THEN 'Medium Value'
        ELSE 'Low Value'
    END AS CustomerValue
FROM 
    FullCustomerInfo x
JOIN 
    customer c ON c.c_customer_sk = x.c_customer_sk
JOIN 
    AddressInfo a ON a.FullAddress = x.FullAddress
JOIN 
    DemographicsInfo d ON d.cd_demo_sk = x.cd_demo_sk
LEFT JOIN 
    SalesInfo s ON s.ws_item_sk = c.c_customer_sk;
