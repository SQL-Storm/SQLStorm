
WITH RECURSIVE CustomerHierarchy AS (
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, c.c_preferred_cust_flag, 
           cd.cd_marital_status, cd.cd_gender,
           ROW_NUMBER() OVER(PARTITION BY cd.cd_marital_status ORDER BY c.c_last_name) AS rn
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE c.c_birth_year > 1980
    UNION ALL
    SELECT ch.c_customer_sk, ch.c_first_name, ch.c_last_name, ch.c_preferred_cust_flag, 
           ch.cd_marital_status, ch.cd_gender,
           ROW_NUMBER() OVER(PARTITION BY ch.cd_marital_status ORDER BY ch.c_last_name) AS rn
    FROM CustomerHierarchy ch
    JOIN customer_address ca ON ch.c_customer_sk = ca.ca_address_sk
    WHERE ca.ca_state = 'CA'
),
TotalSales AS (
    SELECT ws_bill_customer_sk, SUM(ws_net_paid_inc_tax) AS total_sales
    FROM web_sales
    GROUP BY ws_bill_customer_sk
),
HighValueCustomers AS (
    SELECT ch.c_customer_sk, 
           ch.c_first_name, 
           ch.c_last_name, 
           ch.cd_marital_status,
           ts.total_sales
    FROM CustomerHierarchy ch
    LEFT JOIN TotalSales ts ON ch.c_customer_sk = ts.ws_bill_customer_sk
    WHERE ts.total_sales IS NOT NULL AND ts.total_sales > 5000
)
SELECT hvc.c_customer_sk, 
       hvc.c_first_name, 
       hvc.c_last_name, 
       hvc.cd_marital_status, 
       hvc.total_sales,
       COALESCE(SUM(ws.ws_quantity), 0) AS total_quantity,
       STRING_AGG(DISTINCT sm.sm_type, ', ') AS shipping_methods
FROM HighValueCustomers hvc
LEFT JOIN web_sales ws ON hvc.c_customer_sk = ws.ws_ship_customer_sk
LEFT JOIN ship_mode sm ON ws.ws_ship_mode_sk = sm.sm_ship_mode_sk
GROUP BY hvc.c_customer_sk, hvc.c_first_name, hvc.c_last_name, hvc.cd_marital_status, hvc.total_sales
ORDER BY hvc.total_sales DESC, hvc.c_last_name ASC
LIMIT 100;
