
WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        c.c_customer_id,
        MAX(ws.ws_net_paid) AS max_net_paid,
        SUM(ws.ws_net_paid) AS total_net_paid,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        AVG(ws.ws_net_paid) AS avg_net_paid
    FROM 
        customer c
    JOIN 
        web_sales ws ON ws.ws_bill_customer_sk = c.c_customer_sk
    WHERE 
        c.c_birth_year BETWEEN 1980 AND 2000
    GROUP BY 
        c.c_customer_sk, c.c_customer_id
),
HighValueCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_customer_id,
        cs.total_net_paid,
        cs.order_count,
        cs.avg_net_paid
    FROM 
        CustomerSales cs
    JOIN 
        customer c ON cs.c_customer_sk = c.c_customer_sk
    JOIN 
        customer_demographics cd ON cd.cd_demo_sk = c.c_current_cdemo_sk
    WHERE 
        cs.total_net_paid > (SELECT AVG(total_net_paid) FROM CustomerSales)
        AND cd.cd_credit_rating = 'Good'
)
SELECT 
    c.c_first_name,
    c.c_last_name,
    c.c_email_address,
    hv.total_net_paid,
    hv.order_count,
    hv.avg_net_paid,
    d.d_date,
    COUNT(DISTINCT ws.ws_order_number) OVER (PARTITION BY d.d_date) AS daily_order_count,
    COALESCE(d.d_holiday, 'N') AS is_holiday
FROM 
    HighValueCustomers hv
JOIN 
    customer c ON hv.c_customer_sk = c.c_customer_sk
JOIN 
    date_dim d ON d.d_date_sk = (SELECT MAX(ws.ws_ship_date_sk) 
                                  FROM web_sales ws 
                                  WHERE ws.ws_bill_customer_sk = c.c_customer_sk)
WHERE 
    d.d_year = 2023
ORDER BY 
    hv.total_net_paid DESC
FETCH FIRST 100 ROWS ONLY;
