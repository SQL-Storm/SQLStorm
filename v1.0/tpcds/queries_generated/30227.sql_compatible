
WITH RECURSIVE customer_hierarchy AS (
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_marital_status, cd.cd_gender, 
           0 AS hierarchy_level, CAST(c.c_customer_id AS VARCHAR(255)) AS full_path
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE c.c_current_addr_sk IS NOT NULL
    
    UNION ALL
    
    SELECT ch.c_customer_sk, ch.c_first_name, ch.c_last_name, cd.cd_marital_status, cd.cd_gender, 
           ch.hierarchy_level + 1, CAST(CONCAT(ch.full_path, ' -> ', c.c_customer_id) AS VARCHAR(255))
    FROM customer_hierarchy ch
    JOIN customer c ON c.c_current_addr_sk = ch.c_customer_sk
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE c.c_current_addr_sk IS NOT NULL
),
sales_summary AS (
    SELECT 
        ws_bill_customer_sk, 
        SUM(ws_net_paid) AS total_sales,
        COUNT(ws_order_number) AS order_count,
        ROW_NUMBER() OVER (PARTITION BY ws_bill_customer_sk ORDER BY SUM(ws_net_paid) DESC) AS rank
    FROM web_sales
    GROUP BY ws_bill_customer_sk
),
address_info AS (
    SELECT 
        ca.ca_address_sk, 
        ca.ca_city, 
        ca.ca_state, 
        COUNT(DISTINCT ws_bill_customer_sk) AS customer_count,
        SUM(ss.ss_net_paid) AS total_sales
    FROM customer_address ca
    LEFT JOIN store_sales ss ON ca.ca_address_sk = ss.ss_addr_sk
    LEFT JOIN web_sales ws ON ca.ca_address_sk = ws.ws_ship_addr_sk
    GROUP BY ca.ca_address_sk, ca.ca_city, ca.ca_state
)
SELECT 
    ch.c_first_name,
    ch.c_last_name,
    ch.cd_gender,
    ch.cd_marital_status,
    ss.total_sales,
    ss.order_count,
    a.ca_city,
    a.ca_state,
    a.customer_count,
    a.total_sales AS total_sales_address,
    COALESCE(a.customer_count, 0) - COUNT(DISTINCT ss.ws_bill_customer_sk) AS diff_customer_count
FROM customer_hierarchy ch
LEFT JOIN sales_summary ss ON ch.c_customer_sk = ss.ws_bill_customer_sk
LEFT JOIN address_info a ON a.customer_count > 0
WHERE ch.hierarchy_level = 0
AND (ch.cd_gender = 'M' OR ch.cd_gender IS NULL)
GROUP BY ch.c_first_name, ch.c_last_name, ch.cd_gender, ch.cd_marital_status, 
         ss.total_sales, ss.order_count, a.ca_city, a.ca_state, 
         a.customer_count, a.total_sales
ORDER BY total_sales DESC, ch.c_last_name ASC
LIMIT 100;
