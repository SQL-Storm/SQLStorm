
WITH SalesData AS (
    SELECT 
        ws_sold_date_sk,
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_net_paid_inc_tax) AS total_revenue
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk BETWEEN (SELECT MIN(d_date_sk) FROM date_dim WHERE d_year = 2023) AND (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2023)
    GROUP BY 
        ws_sold_date_sk, ws_item_sk
),
CustomerData AS (
    SELECT 
        c.c_customer_sk,
        cd.cd_gender,
        cd.cd_age_group,
        cd.cd_marital_status,
        SUM(sd.total_revenue) AS total_spent,
        COUNT(sd.total_quantity) AS purchase_count
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        SalesData sd ON c.c_customer_sk = sd.ws_item_sk
    GROUP BY 
        c.c_customer_sk, cd.cd_gender, cd.cd_age_group, cd.cd_marital_status
),
TopCustomers AS (
    SELECT
        c_customer_sk,
        cd_gender,
        cd_age_group,
        cd_marital_status,
        total_spent,
        purchase_count,
        RANK() OVER (PARTITION BY cd_gender ORDER BY total_spent DESC) AS rank_within_gender
    FROM 
        CustomerData
)
SELECT 
    c_customer_sk AS c_customer_id,
    cd_gender,
    cd_age_group,
    cd_marital_status,
    total_spent,
    purchase_count
FROM 
    TopCustomers
WHERE 
    rank_within_gender <= 10
ORDER BY 
    cd_gender, total_spent DESC;
