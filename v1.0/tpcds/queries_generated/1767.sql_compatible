
WITH RankedSales AS (
    SELECT 
        ws.ws_item_sk,
        ws.ws_order_number,
        ws.ws_quantity,
        ws.ws_sales_price,
        ws.ws_ext_sales_price,
        ws.ws_ship_date_sk,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_sales_price DESC) AS rank
    FROM 
        web_sales AS ws
    WHERE 
        ws.ws_sold_date_sk BETWEEN 2450000 AND 2450500
),
HighValueItems AS (
    SELECT 
        item.i_item_id,
        item.i_product_name,
        item.i_current_price,
        SUM(rp.ws_ext_sales_price) AS total_sales
    FROM 
        RankedSales AS rp
    JOIN 
        item ON rp.ws_item_sk = item.i_item_sk
    WHERE 
        rp.rank <= 5
    GROUP BY 
        item.i_item_id, item.i_product_name, item.i_current_price
    HAVING 
        SUM(rp.ws_ext_sales_price) > 5000
),
CustomerInfo AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate
    FROM 
        customer AS c
    LEFT JOIN 
        customer_demographics AS cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        cd.cd_purchase_estimate > 1000
)
SELECT 
    ci.c_customer_id,
    ci.c_first_name,
    ci.c_last_name,
    ci.cd_gender,
    hi.i_item_id,
    hi.i_product_name,
    hi.i_current_price,
    hi.total_sales
FROM 
    CustomerInfo AS ci
JOIN 
    HighValueItems AS hi ON ci.cd_purchase_estimate > (SELECT AVG(cd.cd_purchase_estimate) FROM customer_demographics AS cd)
LEFT JOIN 
    store_sales AS ss ON hi.i_item_id = ss.ss_item_sk
WHERE 
    ss.ss_sales_price BETWEEN 50 AND 200
AND 
    ss.ss_sold_date_sk BETWEEN 2450000 AND 2450600
ORDER BY 
    hi.total_sales DESC, ci.c_last_name, ci.c_first_name;
