
WITH CustomerDetails AS (
    SELECT
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        c.c_email_address,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country
    FROM
        customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
SalesData AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_bill_customer_sk,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS order_count
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_order_number, ws.ws_bill_customer_sk
),
AggregatedSales AS (
    SELECT
        s.ws_bill_customer_sk,
        SUM(s.total_sales) AS total_sales_value,
        SUM(s.order_count) AS total_orders
    FROM
        SalesData s
    GROUP BY
        s.ws_bill_customer_sk
)
SELECT
    cd.full_name,
    cd.c_email_address,
    cd.ca_city,
    cd.ca_state,
    cd.ca_country,
    COALESCE(a.total_sales_value, 0) AS total_sales_value,
    COALESCE(a.total_orders, 0) AS total_orders,
    CASE 
        WHEN COALESCE(a.total_sales_value, 0) > 1000 THEN 'High Value Customer'
        WHEN COALESCE(a.total_sales_value, 0) BETWEEN 500 AND 1000 THEN 'Medium Value Customer'
        ELSE 'Low Value Customer'
    END AS customer_value_category
FROM 
    CustomerDetails cd
LEFT JOIN 
    AggregatedSales a ON cd.c_customer_id = a.ws_bill_customer_sk
ORDER BY 
    total_sales_value DESC, cd.full_name;
