
WITH AddressComponents AS (
    SELECT 
        ca_address_sk,
        ca_street_number,
        ca_street_name,
        ca_suite_number,
        ca_city,
        ca_state,
        CONCAT(ca_street_number, ' ', ca_street_name, 
               CASE WHEN ca_suite_number IS NOT NULL AND ca_suite_number <> '' 
                    THEN CONCAT(' Suite ', ca_suite_number) 
                    ELSE '' 
               END, 
               ', ', ca_city, ', ', ca_state) AS full_address
    FROM 
        customer_address
),
CustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        a.full_address,
        d.d_date AS last_purchase_date
    FROM 
        customer c
    JOIN 
        customer_address a ON c.c_current_addr_sk = a.ca_address_sk
    LEFT JOIN 
        (SELECT 
            c_customer_sk, MAX(d_date) AS d_date
         FROM 
            web_sales ws
         JOIN 
            date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
         GROUP BY 
            c_customer_sk) d ON c.c_customer_sk = d.c_customer_sk
)
SELECT 
    ci.c_customer_sk,
    CONCAT(ci.c_first_name, ' ', ci.c_last_name) AS customer_full_name,
    ci.full_address,
    COUNT(DISTINCT ws.ws_order_number) AS total_orders,
    SUM(ws.ws_sales_price) AS total_spent
FROM 
    CustomerInfo ci
LEFT JOIN 
    web_sales ws ON ci.c_customer_sk = ws.ws_ship_customer_sk
GROUP BY 
    ci.c_customer_sk, ci.c_first_name, ci.c_last_name, ci.full_address
ORDER BY 
    total_spent DESC
LIMIT 10;
