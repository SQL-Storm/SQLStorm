
WITH RECURSIVE sales_hierarchy AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        c.c_login,
        SUM(ws.ws_ext_sales_price) AS total_sales
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, c.c_login
    HAVING 
        SUM(ws.ws_ext_sales_price) > 1000
    UNION ALL
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        c.c_login,
        sh.total_sales * 0.1 AS total_sales
    FROM 
        customer c
    JOIN 
        sales_hierarchy sh ON c.c_customer_sk = sh.c_customer_sk
    WHERE 
        sh.total_sales > 0
)
SELECT 
    ca.ca_city,
    COUNT(DISTINCT c.c_customer_sk) AS num_customers,
    AVG(sh.total_sales) AS avg_sales,
    MAX(sh.total_sales) AS max_sales,
    MIN(sh.total_sales) AS min_sales,
    COALESCE(NULLIF(ROUND(SUM(sh.total_sales), 2), 0), 'No Sales') AS total_sales_summary
FROM 
    customer_address ca
LEFT OUTER JOIN customer c ON ca.ca_address_sk = c.c_current_addr_sk
LEFT OUTER JOIN sales_hierarchy sh ON c.c_customer_sk = sh.c_customer_sk
GROUP BY 
    ca.ca_city
ORDER BY 
    num_customers DESC
LIMIT 10;
