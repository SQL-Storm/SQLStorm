WITH customer_sales AS (
    SELECT 
        c.c_customer_sk,
        SUM(ws.ws_sales_price) AS total_web_sales,
        SUM(cs.cs_sales_price) AS total_catalog_sales,
        SUM(ss.ss_sales_price) AS total_store_sales,
        COALESCE(SUM(ws.ws_sales_price), 0) + COALESCE(SUM(cs.cs_sales_price), 0) + COALESCE(SUM(ss.ss_sales_price), 0) AS total_sales
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        catalog_sales cs ON c.c_customer_sk = cs.cs_bill_customer_sk
    LEFT JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY 
        c.c_customer_sk
),
top_customers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cs.total_sales,
        DENSE_RANK() OVER (ORDER BY cs.total_sales DESC) AS sales_rank
    FROM 
        customer_sales cs
    JOIN 
        customer c ON cs.c_customer_sk = c.c_customer_sk
    WHERE 
        cs.total_sales > 0
)
SELECT 
    tc.c_customer_sk,
    tc.c_first_name,
    tc.c_last_name,
    tc.total_sales,
    tc.sales_rank,
    pa.p_promo_name,
    r.r_reason_desc,
    d.d_date
FROM 
    top_customers tc
JOIN 
    promotion pa ON pa.p_promo_sk = (
        SELECT p.p_promo_sk
        FROM promotion p
        WHERE p.p_discount_active = 'Y'
        ORDER BY RAND()
        LIMIT 1
    )
JOIN 
    reason r ON r.r_reason_sk = (
        SELECT r.r_reason_sk
        FROM reason r
        ORDER BY RAND()
        LIMIT 1
    )
JOIN 
    date_dim d ON d.d_date_sk = CAST(cast('2002-10-01' as date) AS INTEGER)
WHERE 
    tc.sales_rank <= 10
ORDER BY 
    tc.total_sales DESC;