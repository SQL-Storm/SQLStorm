
WITH EnhancedCustomerInfo AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating,
        cd.cd_dep_count,
        cd.cd_dep_employed_count,
        cd.cd_dep_college_count,
        CASE 
            WHEN ca.ca_state IN ('CA', 'NY') THEN 'High Traffic State'
            ELSE 'Standard'
        END AS traffic_category
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
SalesWithDescription AS (
    SELECT 
        ws.ws_order_number,
        p.p_promo_name,
        i.i_item_desc,
        ws.ws_sales_price,
        ws.ws_net_profit,
        DATE_FORMAT(DATE_ADD(d.d_date, INTERVAL ws.ws_sold_date_sk DAY), '%Y-%m-%d') AS sale_date
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    JOIN 
        promotion p ON ws.ws_promo_sk = p.p_promo_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
),
CityWiseSales AS (
    SELECT
        e.ca_city AS city,
        SUM(s.ws_net_profit) AS total_profit,
        COUNT(s.ws_order_number) AS total_orders,
        AVG(s.ws_sales_price) AS avg_sales_price
    FROM 
        EnhancedCustomerInfo e
    JOIN 
        SalesWithDescription s ON e.c_customer_id = s.ws_order_number
    GROUP BY 
        e.ca_city
)
SELECT 
    city,
    total_profit,
    total_orders,
    avg_sales_price,
    RANK() OVER (ORDER BY total_profit DESC) AS rank_by_profit
FROM 
    CityWiseSales
WHERE 
    total_orders > 10
ORDER BY 
    total_profit DESC;
