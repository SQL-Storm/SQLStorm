
WITH RECURSIVE ActiveCustomers AS (
    SELECT c.c_customer_sk, c.c_first_name, c.c_last_name, 
           CASE WHEN cd.cd_gender = 'M' THEN 'Mr.' ELSE 'Ms.' END AS salutation,
           cd.cd_marital_status, cd.cd_purchase_estimate, 
           ROW_NUMBER() OVER (PARTITION BY cd.cd_gender ORDER BY cd.cd_purchase_estimate DESC) AS rnk
    FROM customer c
    LEFT JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE c.c_preferred_cust_flag = 'Y'
),
SalesStats AS (
    SELECT ws_bill_customer_sk AS customer_sk, 
           SUM(ws_ext_sales_price) AS total_sales,
           COUNT(DISTINCT ws_order_number) AS total_orders,
           SUM(ws_net_profit) AS total_profit
    FROM web_sales
    GROUP BY ws_bill_customer_sk
),
HighSpenders AS (
    SELECT ac.c_customer_sk, ac.salutation, ac.c_first_name, ac.c_last_name, 
           ss.total_sales, ss.total_orders, ss.total_profit 
    FROM ActiveCustomers ac
    JOIN SalesStats ss ON ac.c_customer_sk = ss.customer_sk
    WHERE ss.total_sales > 1000 AND ac.rnk <= 10
)
SELECT hs.salutation, hs.c_first_name, hs.c_last_name, 
       COALESCE(hs.total_sales, 0) AS total_sales, 
       COALESCE(hs.total_orders, 0) AS total_orders, 
       COALESCE(hs.total_profit, 0) AS total_profit,
       ROUND(hs.total_sales / NULLIF(hs.total_orders, 0), 2) AS avg_sales_per_order
FROM HighSpenders hs
UNION ALL
SELECT 'Total Spend' AS salutation, NULL AS c_first_name, NULL AS c_last_name,
       SUM(COALESCE(hs.total_sales, 0)) AS total_sales,
       SUM(COALESCE(hs.total_orders, 0)) AS total_orders,
       SUM(COALESCE(hs.total_profit, 0)) AS total_profit
FROM HighSpenders hs
GROUP BY salutation
ORDER BY total_sales DESC;
