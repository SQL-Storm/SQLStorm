
WITH String_Concatenation AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        CONCAT(ca.ca_street_number, ' ', ca.ca_street_name, ' ', ca.ca_street_type) AS full_address,
        CONCAT(c.c_email_address, ' - ', TO_CHAR(CAST('2002-10-01' AS DATE), 'YYYY-MM-DD')) AS email_with_date,
        CASE 
            WHEN cd.cd_gender = 'M' THEN 'Mr. '
            WHEN cd.cd_gender = 'F' THEN 'Ms. '
            ELSE ''
        END AS salutation
    FROM 
        customer AS c
    JOIN 
        customer_address AS ca ON c.c_current_addr_sk = ca.ca_address_sk
    JOIN 
        customer_demographics AS cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
Aggregated_Results AS (
    SELECT 
        full_name,
        full_address,
        email_with_date,
        STRING_AGG(DISTINCT salutation, ', ' ORDER BY salutation) AS salutations
    FROM 
        String_Concatenation
    GROUP BY 
        full_name, full_address, email_with_date
)
SELECT 
    full_name,
    full_address,
    email_with_date,
    salutations,
    LENGTH(full_name) AS name_length,
    LENGTH(full_address) AS address_length,
    LENGTH(email_with_date) AS email_length
FROM 
    Aggregated_Results
WHERE 
    LENGTH(full_name) > 10
ORDER BY 
    name_length DESC;
