
WITH RECURSIVE SalesCTE AS (
    SELECT 
        ws.web_site_sk,
        COUNT(ws_order_number) AS total_orders,
        SUM(ws_ext_sales_price) AS total_sales
    FROM 
        web_sales ws
    WHERE 
        ws_sold_date_sk >= (SELECT MIN(d_date_sk) FROM date_dim WHERE d_year = 2023)
    GROUP BY 
        ws.web_site_sk
    UNION ALL
    SELECT 
        s.ss_store_sk,
        COUNT(ss_ticket_number) AS total_orders,
        SUM(ss_ext_sales_price) AS total_sales
    FROM 
        store_sales s
    JOIN 
        SalesCTE ON s.ss_store_sk = SalesCTE.web_site_sk
    WHERE 
        ss_sold_date_sk >= (SELECT MIN(d_date_sk) FROM date_dim WHERE d_year = 2023)
    GROUP BY 
        s.ss_store_sk
),
MaxSales AS (
    SELECT 
        web_site_sk, 
        MAX(total_sales) AS max_sales
    FROM 
        SalesCTE
    GROUP BY 
        web_site_sk
),
CustomerData AS (
    SELECT 
        c.c_customer_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        SUM(ws.ws_quantity) AS total_purchases
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_sk, cd.cd_gender, cd.cd_marital_status
),
RankedCustomers AS (
    SELECT 
        c.*,
        RANK() OVER (PARTITION BY c.cd_gender ORDER BY c.total_purchases DESC) AS purchase_rank
    FROM 
        CustomerData c
)
SELECT 
    ca.ca_state,
    MAX(rc.total_purchases) AS highest_purchase,
    COUNT(DISTINCT rc.c_customer_sk) AS customer_count,
    STRING_AGG(DISTINCT rc.cd_marital_status) AS marital_statuses
FROM 
    RankedCustomers rc
JOIN 
    customer_address ca ON rc.c_customer_sk = ca.ca_address_sk
LEFT JOIN 
    MaxSales ms ON ca.ca_state = (SELECT w.w_warehouse_id FROM warehouse w WHERE w.w_warehouse_sk = ms.web_site_sk)
WHERE 
    rc.purchase_rank <= 5
GROUP BY 
    ca.ca_state
HAVING 
    MAX(rc.total_purchases) > (SELECT AVG(total_sales) FROM SalesCTE)
ORDER BY 
    highest_purchase DESC;
