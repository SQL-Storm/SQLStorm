
WITH RECURSIVE sales_data AS (
    SELECT 
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_ext_sales_price) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_ext_sales_price) DESC) AS rank
    FROM 
        web_sales
    WHERE 
        ws_sold_date_sk BETWEEN (SELECT MIN(d_date_sk) FROM date_dim WHERE d_year = 2023) 
        AND (SELECT MAX(d_date_sk) FROM date_dim WHERE d_year = 2023)
    GROUP BY 
        ws_item_sk
),
most_sold AS (
    SELECT 
        item.i_item_id,
        item.i_item_desc,
        COALESCE(sd.total_quantity, 0) AS quantity_sold,
        COALESCE(sd.total_sales, 0) AS sales_amount
    FROM 
        item
    LEFT JOIN 
        sales_data sd ON item.i_item_sk = sd.ws_item_sk
    WHERE 
        sd.rank = 1
)
SELECT 
    m.i_item_id,
    m.i_item_desc,
    m.quantity_sold,
    m.sales_amount,
    CASE 
        WHEN m.sales_amount = 0 THEN 'No Sales'
        ELSE 'Sales Present'
    END AS sales_status,
    (SELECT 
        COUNT(DISTINCT c.c_customer_sk) 
     FROM 
        customer c 
     WHERE 
        c.c_current_cdemo_sk IN (SELECT c2.c_current_cdemo_sk FROM customer c2 WHERE c2.c_customer_sk = m.i_item_id)) AS distinct_customers
FROM 
    most_sold m
WHERE 
    m.quantity_sold > 100
ORDER BY 
    m.sales_amount DESC
LIMIT 10;
