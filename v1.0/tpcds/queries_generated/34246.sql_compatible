
WITH RECURSIVE SalesHierarchy AS (
    SELECT 
        ss.store_sk,
        ss.sold_date_sk,
        ss.item_sk,
        ss.quantity,
        ss.ext_sales_price,
        ss.net_profit,
        1 AS level
    FROM 
        store_sales ss
    WHERE 
        ss.sold_date_sk = (SELECT MAX(ss2.sold_date_sk) FROM store_sales ss2)

    UNION ALL

    SELECT 
        sh.store_sk,
        ss.sold_date_sk,
        ss.item_sk,
        ss.quantity,
        ss.ext_sales_price,
        ss.net_profit + sh.net_profit AS net_profit,
        level + 1
    FROM 
        store_sales ss
    JOIN 
        SalesHierarchy sh ON ss.store_sk = sh.store_sk AND sh.level < 4
)

SELECT 
    ca.city, 
    COUNT(DISTINCT c.customer_id) AS customer_count,
    SUM(sh.quantity) AS total_quantity,
    AVG(sh.net_profit) AS avg_net_profit,
    STRING_AGG(DISTINCT cd.education_status) AS unique_educational_backgrounds
FROM 
    SalesHierarchy sh
JOIN 
    customer c ON c.customer_sk = sh.customer_sk
LEFT JOIN 
    customer_address ca ON ca.address_sk = c.current_addr_sk
LEFT JOIN 
    customer_demographics cd ON cd.demo_sk = c.current_cdemo_sk
WHERE 
    ca.state = 'CA' 
    AND (c.birth_year BETWEEN 1980 AND 2000 OR c.preferred_cust_flag = 'Y')
GROUP BY 
    ca.city
HAVING 
    COUNT(DISTINCT c.customer_id) > 5 
    AND SUM(sh.net_profit) > 1000.00
ORDER BY 
    total_quantity DESC, avg_net_profit DESC;
