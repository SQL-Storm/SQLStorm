
WITH CustomerSummary AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        COALESCE(SUM(ws.ws_net_profit), 0) AS total_web_sales_profit,
        COALESCE(SUM(ss.ss_net_profit), 0) AS total_store_sales_profit
    FROM customer c
    LEFT JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    GROUP BY c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status
),
IncomeBandSummary AS (
    SELECT 
        hd.hd_demo_sk,
        ib.ib_lower_bound,
        ib.ib_upper_bound,
        AVG(hd.hd_vehicle_count) AS avg_vehicle_count
    FROM household_demographics hd
    JOIN income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
    GROUP BY hd.hd_demo_sk, ib.ib_lower_bound, ib.ib_upper_bound
),
ProfitComparison AS (
    SELECT 
        cs.c_customer_sk,
        cs.c_first_name,
        cs.c_last_name,
        cs.total_web_sales_profit,
        cs.total_store_sales_profit,
        CASE 
            WHEN cs.total_web_sales_profit > cs.total_store_sales_profit THEN 'Web'
            WHEN cs.total_web_sales_profit < cs.total_store_sales_profit THEN 'Store'
            ELSE 'Equal'
        END AS profit_source
    FROM CustomerSummary cs
)
SELECT 
    pc.c_customer_sk,
    pc.c_first_name,
    pc.c_last_name,
    pc.profit_source,
    COALESCE(ibs.avg_vehicle_count, 0) AS avg_vehicle_count,
    DATEDIFF(CURRENT_DATE, MAX(dd.d_date)) AS days_since_last_purchase
FROM ProfitComparison pc
LEFT JOIN customer c ON pc.c_customer_sk = c.c_customer_sk
LEFT JOIN date_dim dd ON dd.d_date_sk = c.c_last_review_date_sk
LEFT JOIN IncomeBandSummary ibs ON c.c_current_cdemo_sk = ibs.hd_demo_sk
WHERE (ibs.ib_upper_bound IS NULL OR ibs.ib_upper_bound > 50000)
AND pc.total_web_sales_profit > 500
GROUP BY pc.c_customer_sk, pc.c_first_name, pc.c_last_name, pc.profit_source, ibs.avg_vehicle_count
HAVING days_since_last_purchase > 30
ORDER BY pc.total_web_sales_profit DESC
LIMIT 50;
