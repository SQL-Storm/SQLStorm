
WITH ranked_sales AS (
    SELECT 
        ws.ws_item_sk, 
        ws.ws_order_number, 
        ws.ws_quantity, 
        ws.ws_ext_sales_price, 
        RANK() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_ext_sales_price DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        i.i_rec_start_date <= DATE '2002-10-01' AND (i.i_rec_end_date IS NULL OR i.i_rec_end_date > DATE '2002-10-01')
),
high_value_sales AS (
    SELECT 
        r.ws_item_sk, 
        r.ws_order_number, 
        r.ws_quantity, 
        r.ws_ext_sales_price
    FROM 
        ranked_sales r
    WHERE 
        r.sales_rank <= 10
),
customer_info AS (
    SELECT 
        c.c_customer_sk, 
        c.c_first_name, 
        c.c_last_name, 
        cd.cd_gender, 
        cd.cd_marital_status, 
        cd.cd_income_band_sk
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
)
SELECT 
    ci.c_customer_sk, 
    ci.c_first_name, 
    ci.c_last_name, 
    ci.cd_gender, 
    ci.cd_marital_status, 
    COUNT(hvs.ws_order_number) AS total_orders, 
    SUM(hvs.ws_ext_sales_price) AS total_sales, 
    AVG(hvs.ws_ext_sales_price) AS average_order_value
FROM 
    high_value_sales hvs
JOIN 
    customer_info ci ON hvs.ws_item_sk = ci.c_customer_sk
GROUP BY 
    ci.c_customer_sk, 
    ci.c_first_name, 
    ci.c_last_name, 
    ci.cd_gender, 
    ci.cd_marital_status
HAVING 
    SUM(hvs.ws_ext_sales_price) > 1000
ORDER BY 
    total_sales DESC;
