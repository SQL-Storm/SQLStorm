
WITH CustomerAddressCTE AS (
    SELECT
        ca_address_sk,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_zip
    FROM
        customer_address
),
CustomerDataCTE AS (
    SELECT
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS customer_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.full_address
    FROM
        customer c
    JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN
        CustomerAddressCTE ca ON c.c_current_addr_sk = ca.ca_address_sk
),
AggregatedData AS (
    SELECT
        d.d_year AS year,
        COUNT(c.c_customer_sk) AS total_customers,
        COUNT(CASE WHEN cd.cd_gender = 'M' THEN 1 END) AS male_customers,
        COUNT(CASE WHEN cd.cd_gender = 'F' THEN 1 END) AS female_customers,
        AVG(cd.cd_dep_count) AS average_dependents,
        STRING_AGG(DISTINCT ca.full_address, ', ') AS unique_addresses
    FROM
        CustomerDataCTE cd
    JOIN
        date_dim d ON d.d_date_sk = cd.c_first_sales_date_sk
    GROUP BY
        d.d_year
)
SELECT
    ad.year,
    ad.total_customers,
    ad.male_customers,
    ad.female_customers,
    ad.average_dependents,
    ad.unique_addresses
FROM
    AggregatedData ad
ORDER BY
    ad.year;
