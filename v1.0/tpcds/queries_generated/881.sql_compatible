
WITH ranked_sales AS (
    SELECT 
        ws.ws_item_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_paid_inc_tax) AS total_sales,
        RANK() OVER (PARTITION BY ws.ws_item_sk ORDER BY SUM(ws.ws_quantity) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        item i ON i.i_item_sk = ws.ws_item_sk
    WHERE 
        ws.ws_sold_date_sk BETWEEN (SELECT MAX(d.d_date_sk) FROM date_dim d WHERE d.d_year = 2001) - 30 AND (SELECT MAX(d.d_date_sk) FROM date_dim d WHERE d.d_year = 2001)
        AND i.i_rec_start_date <= DATE '2002-10-01'
        AND (i.i_rec_end_date IS NULL OR i.i_rec_end_date > DATE '2002-10-01')
    GROUP BY 
        ws.ws_item_sk
), 
top_items AS (
    SELECT 
        ws_item_sk AS item_sk,
        total_quantity,
        total_sales
    FROM 
        ranked_sales
    WHERE 
        sales_rank = 1
)
SELECT 
    ca.ca_state,
    COUNT(DISTINCT c.c_customer_sk) AS customer_count,
    SUM(ti.total_sales) AS total_sales_value,
    AVG(ti.total_quantity) AS avg_quantity_per_item
FROM 
    customer_address ca
JOIN 
    customer c ON c.c_current_addr_sk = ca.ca_address_sk
JOIN 
    top_items ti ON c.c_customer_sk IN (SELECT DISTINCT ws.ws_bill_customer_sk FROM web_sales ws WHERE ws.ws_item_sk = ti.item_sk)
WHERE 
    ca.ca_state IS NOT NULL
GROUP BY 
    ca.ca_state
ORDER BY 
    total_sales_value DESC
FETCH FIRST 10 ROWS ONLY;
