
WITH sales_data AS (
    SELECT 
        cs.cs_sold_date_sk,
        cs.cs_item_sk,
        SUM(cs.cs_quantity) AS total_quantity_sold,
        SUM(cs.cs_sales_price) AS total_sales_price,
        AVG(cs.cs_sales_price) AS avg_sales_price
    FROM 
        catalog_sales cs
    JOIN 
        item i ON cs.cs_item_sk = i.i_item_sk
    JOIN 
        customer c ON cs.cs_bill_customer_sk = c.c_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        cd.cd_gender = 'M' 
        AND cd.cd_marital_status = 'S' 
        AND cd.cd_purchase_estimate > 500 
        AND i.i_current_price < 100
    GROUP BY 
        cs.cs_sold_date_sk, cs.cs_item_sk
),
date_info AS (
    SELECT 
        d.d_date,
        d.d_month_seq,
        d.d_year
    FROM 
        date_dim d
    WHERE 
        d.d_year BETWEEN 2022 AND 2023
),
final_report AS (
    SELECT 
        di.d_year,
        di.d_month_seq,
        sd.cs_item_sk,
        sd.total_quantity_sold,
        sd.total_sales_price,
        sd.avg_sales_price
    FROM 
        sales_data sd
    JOIN 
        date_info di ON cs.cs_sold_date_sk = di.d_date
)
SELECT 
    fr.d_year,
    fr.d_month_seq,
    i.i_item_desc,
    fr.total_quantity_sold,
    fr.total_sales_price,
    fr.avg_sales_price
FROM 
    final_report fr
JOIN 
    item i ON fr.cs_item_sk = i.i_item_sk
ORDER BY 
    fr.d_year, 
    fr.d_month_seq, 
    fr.total_sales_price DESC
FETCH FIRST 100 ROWS ONLY;
