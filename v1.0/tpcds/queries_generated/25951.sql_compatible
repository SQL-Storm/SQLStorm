
WITH AddressDetails AS (
    SELECT 
        ca_address_sk,
        UPPER(ca_street_name) AS street_name,
        CONCAT(ca_city, ', ', ca_state, ', ', ca_country) AS full_location,
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address
    FROM 
        customer_address
),
CustomerDetails AS (
    SELECT 
        c_customer_sk,
        CONCAT(c_first_name, ' ', c_last_name) AS full_name,
        cd_gender,
        cd_marital_status,
        cd_purchase_estimate,
        cd_credit_rating
    FROM 
        customer 
    JOIN 
        customer_demographics ON c_current_cdemo_sk = cd_demo_sk
    WHERE 
        cd_gender = 'F' AND cd_purchase_estimate > 1000
),
DateDetails AS (
    SELECT 
        d_date_sk,
        d_date,
        d_month_seq,
        d_year,
        d_day_name
    FROM 
        date_dim
    WHERE 
        d_year = 2023
),
SalesDetails AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_ext_sales_price) AS total_sales_amount,
        COUNT(ws_order_number) AS total_orders
    FROM 
        web_sales
    GROUP BY 
        ws_bill_customer_sk
)
SELECT 
    c.full_name,
    c.cd_gender,
    c.cd_marital_status,
    c.cd_purchase_estimate,
    a.full_address,
    s.total_sales_amount,
    s.total_orders,
    FORMAT(d.d_date, 'MMMM DD, YYYY') AS sales_date,
    d.d_day_name
FROM 
    CustomerDetails c
JOIN 
    AddressDetails a ON c.c_customer_sk = a.ca_address_sk
JOIN 
    SalesDetails s ON c.c_customer_sk = s.ws_bill_customer_sk
JOIN 
    DateDetails d ON s.ws_sold_date_sk = d.d_date_sk
ORDER BY 
    s.total_sales_amount DESC
FETCH FIRST 100 ROWS ONLY;
