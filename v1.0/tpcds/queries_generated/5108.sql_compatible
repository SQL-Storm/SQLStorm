
WITH sales_data AS (
    SELECT 
        ws.web_site_sk,
        ws.ws_sold_date_sk,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        AVG(ws.ws_net_profit) AS avg_net_profit
    FROM 
        web_sales AS ws
    INNER JOIN 
        date_dim AS dd ON ws.ws_sold_date_sk = dd.d_date_sk
    INNER JOIN 
        customer AS c ON ws.ws_bill_customer_sk = c.c_customer_sk
    WHERE 
        dd.d_year = 2022 
        AND c.c_preferred_cust_flag = 'Y'
    GROUP BY 
        ws.web_site_sk, 
        ws.ws_sold_date_sk
),
return_data AS (
    SELECT 
        wr.wr_web_site_sk,
        COUNT(DISTINCT wr.wr_order_number) AS total_returns,
        SUM(wr.wr_return_amt_inc_tax) AS total_return_amount
    FROM 
        web_returns AS wr
    INNER JOIN 
        date_dim AS dd ON wr.wr_returned_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2022
    GROUP BY 
        wr.wr_web_site_sk
)
SELECT 
    sd.web_site_sk,
    sd.ws_sold_date_sk,
    sd.total_sales,
    sd.total_orders,
    sd.avg_net_profit,
    COALESCE(rd.total_returns, 0) AS total_returns,
    COALESCE(rd.total_return_amount, 0) AS total_return_amount,
    (sd.total_sales - COALESCE(rd.total_return_amount, 0)) AS net_sales
FROM 
    sales_data AS sd
LEFT JOIN 
    return_data AS rd ON sd.web_site_sk = rd.wr_web_site_sk
ORDER BY 
    sd.total_sales DESC;
