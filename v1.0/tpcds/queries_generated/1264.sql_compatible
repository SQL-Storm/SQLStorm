
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(ws.ws_order_number) AS total_orders,
        RANK() OVER (PARTITION BY c.c_customer_id ORDER BY SUM(ws.ws_net_profit) DESC) AS profit_rank
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name
),
TopCustomers AS (
    SELECT 
        cs.c_customer_id,
        cs.c_first_name,
        cs.c_last_name,
        cs.total_profit,
        cs.total_orders
    FROM 
        CustomerSales cs
    WHERE 
        cs.profit_rank <= 10
),
SalesDetails AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_sold_date_sk,
        ws.ws_item_sk,
        ws.ws_quantity,
        ws.ws_net_profit,
        TO_CHAR(d.d_date, 'YYYY-MM') AS sales_month
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
)
SELECT 
    tc.c_customer_id,
    tc.c_first_name,
    tc.c_last_name,
    sd.sales_month,
    SUM(sd.ws_net_profit) AS monthly_profit,
    COUNT(sd.ws_order_number) AS total_orders,
    SUM(sd.ws_quantity) AS total_quantity_sold
FROM 
    TopCustomers tc
LEFT JOIN 
    SalesDetails sd ON tc.c_customer_id = sd.ws_bill_customer_sk
GROUP BY 
    tc.c_customer_id, tc.c_first_name, tc.c_last_name, sd.sales_month
ORDER BY 
    monthly_profit DESC, tc.c_customer_id;
