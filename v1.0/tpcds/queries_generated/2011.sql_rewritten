WITH SalesData AS (
    SELECT 
        ws_bill_customer_sk, 
        SUM(ws_net_profit) AS total_net_profit,
        COUNT(DISTINCT ws_order_number) AS total_orders,
        AVG(ws_sales_price) AS avg_sales_price
    FROM web_sales
    WHERE ws_sold_date_sk BETWEEN 2459682 AND 2459683  
    GROUP BY ws_bill_customer_sk
),
TopCustomers AS (
    SELECT 
        sd.ws_bill_customer_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        RANK() OVER (ORDER BY sd.total_net_profit DESC) AS sales_rank
    FROM SalesData sd
    JOIN customer_demo cd ON sd.ws_bill_customer_sk = cd.cd_demo_sk
    WHERE cd.cd_purchase_estimate > 1000
),
CustomerAddress AS (
    SELECT 
        c.c_customer_sk,
        ca.ca_city,
        ca.ca_state,
        ROW_NUMBER() OVER (PARTITION BY ca.ca_state ORDER BY c.c_birth_year DESC) AS city_rank
    FROM customer c
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
)
SELECT 
    tc.ws_bill_customer_sk,
    tc.cd_gender,
    tc.cd_marital_status,
    ca.ca_city,
    ca.ca_state,
    sd.total_orders,
    sd.total_net_profit,
    sd.avg_sales_price
FROM TopCustomers tc
LEFT JOIN SalesData sd ON tc.ws_bill_customer_sk = sd.ws_bill_customer_sk
LEFT JOIN CustomerAddress ca ON tc.ws_bill_customer_sk = ca.c_customer_sk
WHERE tc.sales_rank <= 10
  AND (ca.ca_city IS NOT NULL OR ca.ca_state IS NOT NULL) 
ORDER BY sd.total_net_profit DESC, tc.ws_bill_customer_sk;