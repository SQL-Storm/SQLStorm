
WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_paid_inc_tax) AS total_sales,
        COUNT(ws.ws_order_number) AS order_count
    FROM customer c
    LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE c.c_first_shipto_date_sk > 0
    GROUP BY c.c_customer_sk, c.c_first_name, c.c_last_name
), HighValueCustomers AS (
    SELECT 
        cs.c_customer_sk,
        cs.c_first_name,
        cs.c_last_name,
        cs.total_sales,
        cs.order_count,
        DENSE_RANK() OVER (ORDER BY cs.total_sales DESC) AS sales_rank
    FROM CustomerSales cs
    WHERE cs.total_sales IS NOT NULL AND cs.total_sales > 1000
), RecentReturns AS (
    SELECT 
        cr.returning_customer_sk,
        SUM(cr.cr_return_amt_inc_tax) AS total_return_amount
    FROM catalog_returns cr
    WHERE cr.cr_returned_date_sk > (
        SELECT MAX(d.d_date_sk) 
        FROM date_dim d 
        WHERE d.d_date = DATE '2002-10-01' - INTERVAL '30 days'
    )
    GROUP BY cr.returning_customer_sk
)
SELECT 
    hvc.c_customer_sk,
    hvc.c_first_name,
    hvc.c_last_name,
    hvc.total_sales,
    hvc.order_count,
    COALESCE(rr.total_return_amount, 0) AS total_return_amount,
    (hvc.total_sales - COALESCE(rr.total_return_amount, 0)) AS net_contribution
FROM HighValueCustomers hvc
LEFT JOIN RecentReturns rr ON hvc.c_customer_sk = rr.returning_customer_sk
WHERE hvc.sales_rank <= 50 
ORDER BY net_contribution DESC;
