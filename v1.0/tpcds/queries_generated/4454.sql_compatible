
WITH sales_summary AS (
    SELECT 
        ws_bill_customer_sk,
        SUM(ws_net_paid) AS total_net_paid,
        COUNT(ws_order_number) AS order_count,
        AVG(ws_net_paid) AS avg_net_paid,
        RANK() OVER (PARTITION BY ws_bill_customer_sk ORDER BY SUM(ws_net_paid) DESC) AS sales_rank
    FROM web_sales
    WHERE ws_sold_date_sk BETWEEN 2450000 AND 2450600  
    GROUP BY ws_bill_customer_sk
),
top_customers AS (
    SELECT 
        c.c_customer_sk AS hs_customer_sk, 
        cd.cd_gender, 
        cd.cd_marital_status, 
        cd.cd_income_band_sk, 
        cd.cd_purchase_estimate,
        ss.total_net_paid,
        ss.order_count,
        ss.avg_net_paid
    FROM sales_summary ss
    JOIN customer c ON ss.ws_bill_customer_sk = c.c_customer_sk
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE ss.sales_rank <= 10  
),
inventory_summary AS (
    SELECT 
        inv.inv_item_sk,
        SUM(inv.inv_quantity_on_hand) AS total_quantity_on_hand
    FROM inventory inv
    GROUP BY inv.inv_item_sk
),
item_summary AS (
    SELECT 
        i.i_item_sk,
        i.i_item_desc,
        COALESCE(NULLIF(i.i_current_price, 0), 1) AS safe_price  
    FROM item i
),
sales_analysis AS (
    SELECT 
        t_customer.hs_customer_sk AS c_customer_id,
        SUM(t_sales.ws_net_paid) AS total_sales,
        SUM(t_returns.wr_return_amt) AS total_returns,
        AVG(t_returns.wr_return_amt) AS avg_return
    FROM top_customers t_customer
    LEFT JOIN web_sales t_sales ON t_customer.hs_customer_sk = t_sales.ws_bill_customer_sk
    LEFT JOIN web_returns t_returns ON t_sales.ws_order_number = t_returns.wr_order_number
    GROUP BY t_customer.hs_customer_sk
)
SELECT 
    t_customer.hs_customer_sk AS c_customer_id,
    t_customer.cd_gender,
    t_customer.cd_marital_status,
    ia.total_quantity_on_hand,
    sa.total_sales,
    COALESCE(sa.total_returns, 0) AS total_returns,
    sa.total_sales - COALESCE(sa.total_returns, 0) AS net_sales,
    ROUND((sa.total_sales - COALESCE(sa.total_returns, 0)) / NULLIF(ia.total_quantity_on_hand, 0), 2) AS sales_per_item
FROM top_customers t_customer
LEFT JOIN inventory_summary ia ON t_customer.hs_item_sk = ia.inv_item_sk       
JOIN sales_analysis sa ON t_customer.hs_customer_sk = sa.c_customer_id
ORDER BY net_sales DESC;
