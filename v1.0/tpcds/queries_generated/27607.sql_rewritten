WITH CustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        ca.ca_city,
        ca.ca_state,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
SalesAgg AS (
    SELECT 
        wi.ws_bill_customer_sk AS customer_sk,
        SUM(ws_ext_sales_price) AS total_sales,
        COUNT(ws_order_number) AS order_count,
        MIN(ws_sold_date_sk) AS first_purchase,
        MAX(ws_sold_date_sk) AS last_purchase
    FROM 
        web_sales wi
    GROUP BY 
        wi.ws_bill_customer_sk
),
CustomerBenchmark AS (
    SELECT 
        ci.full_name,
        ci.ca_city,
        ci.ca_state,
        ci.cd_gender,
        ci.cd_marital_status,
        ci.cd_education_status,
        ci.cd_purchase_estimate,
        sa.total_sales,
        sa.order_count,
        sa.first_purchase,
        sa.last_purchase
    FROM 
        CustomerInfo ci
    LEFT JOIN 
        SalesAgg sa ON ci.c_customer_sk = sa.customer_sk
)
SELECT 
    full_name,
    ca_city,
    ca_state,
    cd_gender,
    cd_marital_status,
    cd_education_status,
    cd_purchase_estimate,
    COALESCE(total_sales, 0) AS total_sales,
    COALESCE(order_count, 0) AS order_count,
    DATEDIFF(cast('2002-10-01' as date), first_purchase) AS days_since_first_purchase,
    DATEDIFF(cast('2002-10-01' as date), last_purchase) AS days_since_last_purchase
FROM 
    CustomerBenchmark
ORDER BY 
    total_sales DESC
LIMIT 100;