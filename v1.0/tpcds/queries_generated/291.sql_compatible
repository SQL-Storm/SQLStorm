
WITH SalesSummary AS (
    SELECT 
        c.c_customer_id,
        d.d_year,
        SUM(ss.ss_net_profit) AS total_net_profit,
        AVG(ss.ss_sales_price) AS avg_sales_price,
        COUNT(DISTINCT ss.ss_ticket_number) AS total_transactions
    FROM 
        customer AS c
    JOIN 
        store_sales AS ss ON c.c_customer_sk = ss.ss_customer_sk
    JOIN 
        date_dim AS d ON ss.ss_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year >= 2021
    GROUP BY 
        c.c_customer_id, d.d_year
),

TopCustomers AS (
    SELECT 
        c_customer_id,
        d_year,
        total_net_profit,
        ROW_NUMBER() OVER (PARTITION BY d_year ORDER BY total_net_profit DESC) AS rnk
    FROM 
        SalesSummary
)

SELECT 
    tc.c_customer_id,
    tc.d_year,
    tc.total_net_profit,
    COALESCE(s.avg_sales_price, 0) AS avg_sales_price,
    s.total_transactions
FROM 
    TopCustomers AS tc
LEFT JOIN 
    SalesSummary AS s ON tc.c_customer_id = s.c_customer_id AND tc.d_year = s.d_year
WHERE 
    tc.rnk <= 5
ORDER BY 
    tc.d_year, tc.total_net_profit DESC

UNION ALL

SELECT 
    'TOTAL' AS c_customer_id,
    d_year,
    SUM(total_net_profit) AS total_net_profit,
    0 AS avg_sales_price,
    COUNT(*) AS total_transactions
FROM 
    TopCustomers
GROUP BY 
    d_year
ORDER BY 
    d_year;
