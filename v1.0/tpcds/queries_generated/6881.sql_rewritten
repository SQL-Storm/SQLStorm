WITH RankedSales AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        RANK() OVER (PARTITION BY ws.web_site_id ORDER BY SUM(ws.ws_ext_sales_price) DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        web_site w ON ws.ws_web_site_sk = w.web_site_sk
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        cd.cd_marital_status = 'M' 
        AND cd.cd_gender = 'F'
        AND ws.ws_sold_date_sk BETWEEN 2458498 AND 2458542 
    GROUP BY 
        ws.web_site_id
),
TopWebSites AS (
    SELECT 
        web_site_id,
        total_sales,
        total_orders
    FROM 
        RankedSales
    WHERE 
        sales_rank <= 5
)
SELECT 
    w.web_name,
    tw.total_sales,
    tw.total_orders,
    AVG(cd.cd_purchase_estimate) AS avg_purchase_estimate
FROM 
    TopWebSites tw
JOIN 
    web_site w ON tw.web_site_id = w.web_site_id
JOIN 
    customer c ON c.c_customer_id IN (SELECT c_customer_id FROM web_sales WHERE ws_web_site_sk = w.web_site_sk)
JOIN 
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
GROUP BY 
    w.web_name, tw.total_sales, tw.total_orders
ORDER BY 
    tw.total_sales DESC;