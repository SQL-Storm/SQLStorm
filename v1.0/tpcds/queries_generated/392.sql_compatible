
WITH SalesData AS (
    SELECT 
        ws_item_sk,
        SUM(ws_sales_price) AS total_sales,
        COUNT(ws_order_number) AS order_count,
        AVG(ws_net_paid) AS avg_net_paid,
        RANK() OVER (PARTITION BY ws_item_sk ORDER BY SUM(ws_sales_price) DESC) AS sales_rank
    FROM 
        web_sales
    WHERE 
        ws_ship_date_sk BETWEEN 2451545 AND 2455570  
    GROUP BY 
        ws_item_sk
),
TopSellingItems AS (
    SELECT 
        i.i_item_sk,
        i.i_item_desc,
        s.s_store_sk,
        s.s_store_name,
        cs.cs_ext_sales_price,
        ROW_NUMBER() OVER (PARTITION BY s.s_store_sk ORDER BY cs.cs_ext_sales_price DESC) AS item_rank
    FROM 
        catalog_sales cs
    JOIN 
        item i ON cs.cs_item_sk = i.i_item_sk
    JOIN 
        store s ON cs.cs_ship_mode_sk = s.s_store_sk
)
SELECT 
    ca.city,
    SUM(sd.total_sales) AS total_sales_in_area,
    COUNT(DISTINCT cs.ws_order_number) AS distinct_order_count,
    AVG(sd.avg_net_paid) AS average_net_paid,
    STRING_AGG(DISTINCT ti.i_item_desc) AS top_items_sold
FROM 
    SalesData sd
JOIN 
    customer_address ca ON ca.ca_address_sk = (SELECT c.c_current_addr_sk FROM customer c WHERE c.c_customer_sk = cs.ws_bill_customer_sk LIMIT 1)
LEFT JOIN 
    TopSellingItems ti ON ti.i_item_sk = sd.ws_item_sk
LEFT JOIN 
    catalog_sales cs ON cs.cs_item_sk = sd.ws_item_sk
WHERE 
    ca.ca_state = 'CA'
    AND sd.sales_rank <= 10   
GROUP BY 
    ca.city
ORDER BY 
    total_sales_in_area DESC;
