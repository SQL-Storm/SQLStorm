
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        SUM(COALESCE(ws.ws_net_paid, 0)) AS total_web_sales,
        SUM(COALESCE(cs.cs_net_paid, 0)) AS total_catalog_sales,
        RANK() OVER (PARTITION BY c.c_customer_id ORDER BY SUM(COALESCE(ws.ws_net_paid, 0)) DESC) AS web_sales_rank,
        RANK() OVER (PARTITION BY c.c_customer_id ORDER BY SUM(COALESCE(cs.cs_net_paid, 0)) DESC) AS catalog_sales_rank
    FROM 
        customer c
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    LEFT JOIN 
        catalog_sales cs ON c.c_customer_sk = cs.cs_bill_customer_sk
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name
),
SalesPerformance AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        COALESCE(cs.total_web_sales, 0) AS total_web_sales,
        COALESCE(cs.total_catalog_sales, 0) AS total_catalog_sales,
        CASE 
            WHEN cs.total_web_sales > cs.total_catalog_sales THEN 'Web'
            WHEN cs.total_web_sales < cs.total_catalog_sales THEN 'Catalog'
            ELSE 'Equal'
        END AS preferred_channel,
        cs.web_sales_rank,
        cs.catalog_sales_rank
    FROM 
        CustomerSales cs 
    JOIN 
        customer c ON cs.c_customer_id = c.c_customer_id
)
SELECT 
    c.c_customer_id,
    c.c_first_name,
    c.c_last_name,
    COALESCE(sp.total_web_sales, 0) AS total_web_sales,
    COALESCE(sp.total_catalog_sales, 0) AS total_catalog_sales,
    COALESCE(sp.preferred_channel, 'None') AS preferred_channel,
    CASE 
        WHEN sp.web_sales_rank IS NULL OR sp.catalog_sales_rank IS NULL THEN 'Not Ranked'
        ELSE 
            CASE 
                WHEN sp.web_sales_rank = 1 THEN 'Top Web Customer'
                WHEN sp.catalog_sales_rank = 1 THEN 'Top Catalog Customer'
                ELSE 'Regular Customer'
            END 
    END AS customer_type,
    (SELECT COUNT(DISTINCT wr_returning_customer_sk) 
     FROM web_returns wr 
     WHERE wr.returned_date_sk > DATE '2002-10-01' - INTERVAL '30 days' 
     AND wr.returning_customer_sk = c.c_customer_sk) AS recent_returns
FROM 
    SalesPerformance sp
JOIN 
    customer c ON sp.c_customer_id = c.c_customer_id
LEFT JOIN 
    date_dim d ON d.d_date_sk = ws.ws_sold_date_sk
WHERE 
    (sp.total_web_sales + sp.total_catalog_sales) > 1000
ORDER BY 
    total_web_sales DESC, 
    total_catalog_sales DESC
LIMIT 100;
