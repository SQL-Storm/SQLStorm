WITH SalesData AS (
    SELECT 
        ws.web_site_id,
        c.c_gender,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        COUNT(DISTINCT c.c_customer_id) AS unique_customers
    FROM 
        web_sales ws
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    WHERE 
        d.d_year = 2001 AND 
        (c.c_birth_month = 1 AND c.c_birth_day <= 15)
    GROUP BY 
        ws.web_site_id, c.c_gender
),
InventoryData AS (
    SELECT 
        inv.inv_date_sk,
        SUM(inv.inv_quantity_on_hand) AS total_inventory
    FROM 
        inventory inv
    GROUP BY 
        inv.inv_date_sk
),
FinalReport AS (
    SELECT 
        sd.web_site_id, 
        sd.c_gender, 
        sd.total_sales, 
        sd.total_orders, 
        sd.unique_customers, 
        iv.total_inventory
    FROM 
        SalesData sd
    JOIN 
        InventoryData iv ON sd.web_site_id = (SELECT MAX(ws_id) FROM web_site) 
)
SELECT 
    fr.web_site_id,
    fr.c_gender,
    fr.total_sales,
    fr.total_orders,
    fr.unique_customers,
    fr.total_inventory,
    (fr.total_sales / NULLIF(fr.total_orders, 0)) AS avg_order_value,
    (fr.total_sales / NULLIF(fr.unique_customers, 0)) AS avg_sales_per_customer
FROM 
    FinalReport fr
ORDER BY 
    fr.total_sales DESC
LIMIT 10;