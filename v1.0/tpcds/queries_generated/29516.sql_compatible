
WITH FilteredCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        c.c_email_address,
        cd.cd_gender,
        cd.cd_marital_status,
        ca.ca_city,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        CASE 
            WHEN cd.cd_gender = 'M' THEN CONCAT('Mr. ', c.c_last_name) 
            ELSE CONCAT('Ms. ', c.c_last_name) 
        END AS salutation
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    WHERE 
        cd.cd_marital_status = 'M' 
        AND ca.ca_city LIKE '%Springfield%'
),
SalesData AS (
    SELECT 
        ws.ws_order_number,
        ws.ws_sales_price,
        ws.ws_quantity,
        ws.ws_net_profit,
        wc.cc_name,
        ROW_NUMBER() OVER (PARTITION BY wc.cc_name ORDER BY ws.ws_order_number DESC) AS order_rank
    FROM 
        web_sales ws
    JOIN 
        web_site wc ON ws.ws_web_site_sk = wc.web_site_sk
)
SELECT 
    fc.full_name,
    fc.salutation,
    SUM(sd.ws_sales_price) AS total_spent,
    COUNT(sd.ws_order_number) AS total_orders,
    MAX(sd.ws_net_profit) AS max_profit,
    MIN(sd.ws_net_profit) AS min_profit
FROM 
    FilteredCustomers fc
LEFT JOIN 
    SalesData sd ON fc.c_customer_sk = sd.ws_bill_customer_sk
WHERE 
    sd.order_rank <= 5
GROUP BY 
    fc.full_name, fc.salutation, fc.c_customer_sk
ORDER BY 
    total_spent DESC
FETCH FIRST 10 ROWS ONLY;
