
WITH CustomerReturns AS (
    SELECT 
        wr_returning_customer_sk,
        SUM(wr_return_quantity) AS total_return_quantity,
        SUM(wr_return_amt) AS total_return_amount
    FROM web_returns
    GROUP BY wr_returning_customer_sk
),
CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.ca_city,
        ca.ca_state,
        ca.ca_country,
        cr.total_return_quantity,
        cr.total_return_amount
    FROM customer_demographics cd
    JOIN customer c ON cd.cd_demo_sk = c.c_current_cdemo_sk
    JOIN CustomerReturns cr ON cr.wr_returning_customer_sk = c.c_customer_sk
    JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
SalesSummary AS (
    SELECT 
        CAST(d.d_date AS DATE) AS sales_date,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        SUM(ws.ws_quantity) AS total_quantity,
        AVG(ws.ws_net_paid) AS average_net_paid
    FROM web_sales ws
    JOIN date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    GROUP BY CAST(d.d_date AS DATE)
)
SELECT 
    cd.cd_gender,
    cd.cd_marital_status,
    cd.cd_education_status,
    cd.ca_city,
    cd.ca_state,
    cd.ca_country,
    ss.sales_date,
    ss.total_sales,
    ss.total_quantity,
    ss.average_net_paid,
    COUNT(DISTINCT cd.cd_demo_sk) AS customer_count
FROM CustomerDemographics cd
JOIN SalesSummary ss ON ss.sales_date BETWEEN CURRENT_DATE - INTERVAL '30 days' AND CURRENT_DATE
GROUP BY 
    cd.cd_gender, 
    cd.cd_marital_status, 
    cd.cd_education_status, 
    cd.ca_city, 
    cd.ca_state, 
    cd.ca_country,
    ss.sales_date
ORDER BY ss.sales_date DESC, cd.cd_gender, cd.cd_marital_status;
