
WITH SalesData AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_net_profit) AS total_net_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        AVG(ws.ws_sales_price) AS average_sales_price,
        DATE_PART('day', CURRENT_DATE - MIN(d.d_date)) AS days_since_first_sale,
        COUNT(DISTINCT c.c_customer_id) AS unique_customers
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    JOIN 
        customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    JOIN 
        item i ON ws.ws_item_sk = i.i_item_sk
    JOIN 
        store s ON ws.ws_ship_addr_sk = s.s_store_sk
    WHERE 
        d.d_year = 2023
    GROUP BY 
        ws.web_site_id
),
CustomerDemographics AS (
    SELECT 
        cd.cd_gender,
        SUM(sd.total_net_profit) AS gender_net_profit,
        COUNT(DISTINCT sd.unique_customers) AS gender_unique_customers,
        AVG(sd.average_sales_price) AS gender_average_sales_price
    FROM 
        SalesData sd
    JOIN 
        customer_demographics cd ON sd.web_site_id = cd.cd_demo_sk
    GROUP BY 
        cd.cd_gender
)
SELECT 
    cd.cd_gender,
    cd.gender_net_profit,
    cd.gender_unique_customers,
    cd.gender_average_sales_price,
    CASE 
        WHEN cd.gender_net_profit > 1000000 THEN 'High'
        WHEN cd.gender_net_profit BETWEEN 500000 AND 1000000 THEN 'Medium'
        ELSE 'Low'
    END AS performance_band
FROM 
    CustomerDemographics cd
ORDER BY 
    cd.gender_net_profit DESC;
