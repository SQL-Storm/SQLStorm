
SELECT 
    c.c_customer_id,
    c.c_first_name,
    c.c_last_name,
    SUM(ss.ss_ext_sales_price) AS total_sales,
    COUNT(DISTINCT ss.ss_ticket_number) AS total_transactions,
    cd.cd_gender,
    cd.cd_marital_status,
    cd.cd_purchase_estimate,
    dd.d_year,
    dd.d_month_seq,
    ws.web_name,
    sm.sm_type
FROM 
    customer c
JOIN 
    store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
JOIN 
    customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
JOIN 
    date_dim dd ON ss.ss_sold_date_sk = dd.d_date_sk
JOIN 
    web_site ws ON ss.ss_web_site_sk = ws.web_site_sk
JOIN 
    ship_mode sm ON ss.ss_ship_mode_sk = sm.sm_ship_mode_sk
WHERE 
    dd.d_year = 2022
GROUP BY 
    c.c_customer_id, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status, cd.cd_purchase_estimate, dd.d_year, dd.d_month_seq, ws.web_name, sm.sm_type
HAVING 
    SUM(ss.ss_ext_sales_price) > 1000
ORDER BY 
    total_sales DESC
FETCH FIRST 100 ROWS ONLY;
