
WITH ranked_customer_addresses AS (
    SELECT 
        ca.ca_address_id,
        ca.ca_city,
        ca.ca_state,
        ROW_NUMBER() OVER (PARTITION BY ca.ca_state ORDER BY LENGTH(ca.ca_address_id), ca.ca_city) AS city_rank
    FROM 
        customer_address ca
    WHERE 
        ca.ca_city IS NOT NULL
),
filtered_customers AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        cd.cd_purchase_estimate,
        cd.cd_credit_rating,
        ra.city_rank
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        ranked_customer_addresses ra ON c.c_current_addr_sk = ra.ca_address_id
    WHERE 
        ra.city_rank = 1
)

SELECT 
    COUNT(*) AS total_filtered_customers,
    AVG(cd.cd_purchase_estimate) AS avg_purchase_estimate,
    cd.cd_gender,
    cd.cd_marital_status
FROM 
    filtered_customers cd
GROUP BY 
    cd.cd_gender, 
    cd.cd_marital_status
ORDER BY 
    total_filtered_customers DESC;
