
WITH sales_stats AS (
    SELECT 
        ws.web_site_sk,
        SUM(ws.ws_sales_price) AS total_sales,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        AVG(ws.ws_net_profit) AS avg_net_profit
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023
    GROUP BY 
        ws.web_site_sk
),
customer_info AS (
    SELECT 
        c.c_customer_sk,
        cd.cd_gender,
        cd.cd_marital_status,
        COALESCE(hd.hd_income_band_sk, -1) AS income_band
    FROM 
        customer c
    LEFT JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        household_demographics hd ON c.c_current_hdemo_sk = hd.hd_demo_sk
),
return_info AS (
    SELECT 
        sr.rs_returned_date_sk,
        COUNT(sr.rs_ticket_number) AS return_count,
        SUM(sr.rs_return_amt_inc_tax) AS total_return_amt
    FROM 
        store_returns sr
    JOIN 
        date_dim dd ON sr.rs_returned_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023
    GROUP BY 
        sr.rs_returned_date_sk
)
SELECT 
    ci.c_customer_sk,
    ci.cd_gender,
    ci.cd_marital_status,
    ci.income_band,
    ss.total_sales,
    ss.order_count,
    ss.avg_net_profit,
    ri.return_count,
    ri.total_return_amt
FROM 
    customer_info ci
LEFT JOIN 
    sales_stats ss ON ci.c_customer_sk = ss.web_site_sk
LEFT JOIN 
    return_info ri ON ri.rs_returned_date_sk = (SELECT MAX(rs_returned_date_sk) FROM store_returns)
WHERE 
    ci.cd_gender = 'M' 
    AND (ci.cd_marital_status = 'S' OR ci.income_band > 3)
ORDER BY 
    ss.total_sales DESC
FETCH FIRST 100 ROWS ONLY;
