
WITH CustomerReturns AS (
    SELECT 
        wr_returning_customer_sk,
        COUNT(*) AS total_web_returns,
        SUM(wr_return_amount) AS total_web_return_amount
    FROM web_returns
    GROUP BY wr_returning_customer_sk
), 
StoreReturns AS (
    SELECT 
        sr_customer_sk,
        COUNT(*) AS total_store_returns,
        SUM(sr_return_amt) AS total_store_return_amount
    FROM store_returns
    GROUP BY sr_customer_sk
),
SalesData AS (
    SELECT 
        ws_bill_customer_sk AS customer_sk,
        SUM(ws_net_profit) AS total_web_sales_profit
    FROM web_sales
    WHERE ws_sold_date_sk BETWEEN 20210101 AND 20211231
    GROUP BY ws_bill_customer_sk
)
SELECT 
    COALESCE(c.c_customer_id, 'Unknown') AS customer_id,
    COALESCE(c.c_first_name, 'N/A') AS first_name,
    COALESCE(c.c_last_name, 'N/A') AS last_name,
    COALESCE(cr.total_web_returns, 0) AS total_web_returns,
    COALESCE(cr.total_web_return_amount, 0) AS total_web_return_amount,
    COALESCE(sr.total_store_returns, 0) AS total_store_returns,
    COALESCE(sr.total_store_return_amount, 0) AS total_store_return_amount,
    COALESCE(sd.total_web_sales_profit, 0) AS total_web_sales_profit
FROM customer c
LEFT JOIN CustomerReturns cr ON c.c_customer_sk = cr.wr_returning_customer_sk
LEFT JOIN StoreReturns sr ON c.c_customer_sk = sr.sr_customer_sk
LEFT JOIN SalesData sd ON c.c_customer_sk = sd.customer_sk
WHERE (COALESCE(cr.total_web_returns, 0) > 0 OR COALESCE(sr.total_store_returns, 0) > 0)
AND c.c_birth_year > 1980
ORDER BY total_web_sales_profit DESC
LIMIT 100;
