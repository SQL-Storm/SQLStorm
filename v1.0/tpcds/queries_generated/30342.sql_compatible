
WITH RECURSIVE income_distribution AS (
    SELECT hd_income_band_sk, 
           'Below ' || CAST(ib_lower_bound AS CHAR) || ' - ' || CAST(ib_upper_bound AS CHAR) AS income_band_range,
           SUM(hd_dep_count) AS total_deps
    FROM household_demographics AS hd
    JOIN income_band AS ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
    GROUP BY hd_income_band_sk, ib_lower_bound, ib_upper_bound
    UNION ALL
    SELECT hb.hd_income_band_sk,
           'Above ' || CAST(ib_upper_bound AS CHAR) AS income_band_range,
           SUM(hd.dep_count)
    FROM income_distribution AS hb
    JOIN household_demographics AS hd ON hb.hd_income_band_sk = hd.hd_income_band_sk
    WHERE hd.dep_count > 0
    GROUP BY hb.hd_income_band_sk, ib_upper_bound
),
sales_data AS (
    SELECT ws.web_site_sk,
           SUM(ws.ws_net_paid) AS total_sales,
           COUNT(DISTINCT ws.ws_order_number) AS orders_count
    FROM web_sales AS ws
    WHERE ws.ws_sold_date_sk = (SELECT d_date_sk FROM date_dim WHERE d_date = CAST('2002-10-01' AS DATE))
    GROUP BY ws.web_site_sk
),
customer_info AS (
    SELECT c.c_customer_sk,
           c.c_first_name,
           c.c_last_name,
           cd.cd_gender,
           cd.cd_marital_status,
           ROW_NUMBER() OVER (PARTITION BY cd.cd_gender ORDER BY c.c_birth_year DESC) AS rn
    FROM customer AS c
    JOIN customer_demographics AS cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
)
SELECT DISTINCT ci.c_first_name || ' ' || ci.c_last_name AS customer_name,
                ci.cd_gender,
                ci.cd_marital_status,
                id.income_band_range,
                sd.total_sales,
                sd.orders_count
FROM customer_info AS ci
LEFT JOIN income_distribution AS id ON ci.rn <= 3
FULL OUTER JOIN sales_data AS sd ON ci.c_customer_sk = sd.web_site_sk
WHERE sd.total_sales > 1000 OR sd.orders_count > 5
ORDER BY customer_name, sd.total_sales DESC
FETCH FIRST 10 ROWS ONLY;
