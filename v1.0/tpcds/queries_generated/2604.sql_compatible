
WITH CustomerReturns AS (
    SELECT 
        sr_item_sk,
        sr_customer_sk,
        SUM(sr_return_quantity) AS total_returned_quantity,
        SUM(sr_return_amt) AS total_returned_amount
    FROM 
        store_returns
    GROUP BY 
        sr_item_sk, 
        sr_customer_sk
),
AggregateSales AS (
    SELECT 
        ws_item_sk,
        COUNT(ws_order_number) AS total_orders,
        SUM(ws_quantity) AS total_sold_quantity,
        SUM(ws_sales_price) AS total_sales_amount
    FROM 
        web_sales
    GROUP BY 
        ws_item_sk
),
QualifiedCustomers AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_income_band_sk
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    WHERE 
        cd.cd_marital_status = 'M' 
        AND cd.cd_gender = 'F'
),
PopularItems AS (
    SELECT 
        i.i_item_sk,
        i.i_item_desc,
        COALESCE(s.total_sales_amount, 0) AS total_sales_amount,
        COALESCE(r.total_returned_amount, 0) AS total_returned_amount,
        (COALESCE(s.total_sales_amount, 0) - COALESCE(r.total_returned_amount, 0)) AS net_sales
    FROM 
        item i
    LEFT JOIN 
        AggregateSales s ON i.i_item_sk = s.ws_item_sk
    LEFT JOIN 
        CustomerReturns r ON i.i_item_sk = r.sr_item_sk
    WHERE 
        i.i_current_price > 10
)
SELECT 
    c.c_first_name,
    c.c_last_name,
    pi.i_item_desc,
    pi.total_sales_amount,
    pi.total_returned_amount,
    pi.net_sales,
    cd.cd_income_band_sk,
    ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY pi.net_sales DESC) AS rank_within_customer
FROM 
    QualifiedCustomers c
JOIN 
    CustomerReturns r ON c.c_customer_sk = r.sr_customer_sk
JOIN 
    PopularItems pi ON r.sr_item_sk = pi.i_item_sk
JOIN 
    household_demographics cd ON cd.hd_demo_sk = c.c_current_hdemo_sk
WHERE 
    pi.net_sales > 0
ORDER BY 
    c.c_first_name, 
    c.c_last_name, 
    pi.net_sales DESC
FETCH FIRST 100 ROWS ONLY;
