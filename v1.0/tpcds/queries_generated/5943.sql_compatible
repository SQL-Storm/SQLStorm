
WITH customer_orders AS (
    SELECT 
        c.c_customer_id,
        SUM(ss.ss_net_paid) AS total_spent,
        COUNT(DISTINCT ss.ss_ticket_number) AS total_purchases,
        COUNT(DISTINCT ss.ss_item_sk) AS unique_items_purchased
    FROM 
        customer c
    JOIN 
        store_sales ss ON c.c_customer_sk = ss.ss_customer_sk
    JOIN 
        date_dim d ON ss.ss_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2001 
        AND d.d_moy IN (1, 2, 3) 
    GROUP BY 
        c.c_customer_id
),
customer_demographics AS (
    SELECT 
        cd.cd_gender,
        SUM(co.total_spent) AS total_spent_by_gender,
        COUNT(co.c_customer_id) AS total_customers
    FROM 
        customer_orders co
    JOIN 
        customer_demographics cd ON co.c_customer_id = cd.cd_demo_sk
    GROUP BY 
        cd.cd_gender
),
top_items AS (
    SELECT 
        i.i_item_id,
        SUM(ss.ss_quantity) AS total_sold
    FROM 
        store_sales ss
    JOIN 
        item i ON ss.ss_item_sk = i.i_item_sk
    WHERE 
        ss.ss_sold_date_sk >= (SELECT MAX(ss2.ss_sold_date_sk) FROM store_sales ss2 WHERE ss2.ss_sold_date_sk < 20230101)
    GROUP BY 
        i.i_item_id
    ORDER BY 
        total_sold DESC
    FETCH FIRST 10 ROWS ONLY
)
SELECT 
    cd.cd_gender,
    cd.total_spent_by_gender,
    cd.total_customers,
    ti.i_item_id,
    ti.total_sold
FROM 
    customer_demographics cd
CROSS JOIN 
    top_items ti
ORDER BY 
    cd.cd_gender, 
    ti.total_sold DESC;
