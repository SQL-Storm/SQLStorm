
WITH tenure AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        DATEDIFF(CAST('2002-10-01' AS DATE), MIN(d.d_date)) AS customer_tenure_days,
        CASE
            WHEN DATEDIFF(CAST('2002-10-01' AS DATE), MIN(d.d_date)) < 30 THEN 'New'
            WHEN DATEDIFF(CAST('2002-10-01' AS DATE), MIN(d.d_date)) BETWEEN 30 AND 365 THEN 'Regular'
            ELSE 'Loyal'
        END AS customer_type
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        date_dim d ON d.d_date_sk = ws.ws_sold_date_sk
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name
),
order_summary AS (
    SELECT 
        ws.ws_bill_customer_sk,
        SUM(ws.ws_net_profit) AS total_net_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM 
        web_sales ws
    GROUP BY 
        ws.ws_bill_customer_sk
),
returns AS (
    SELECT 
        sr.sr_customer_sk,
        SUM(sr.sr_return_amt) AS total_return_amount
    FROM 
        store_returns sr
    GROUP BY 
        sr.sr_customer_sk
)
SELECT 
    t.c_first_name,
    t.c_last_name,
    t.customer_tenure_days,
    t.customer_type,
    COALESCE(os.total_net_profit, 0) AS total_net_profit,
    COALESCE(os.total_orders, 0) AS total_orders,
    COALESCE(r.total_return_amount, 0) AS total_return_amount
FROM 
    tenure t
LEFT JOIN 
    order_summary os ON t.c_customer_sk = os.ws_bill_customer_sk
LEFT JOIN 
    returns r ON t.c_customer_sk = r.sr_customer_sk
WHERE 
    t.customer_type = 'Loyal' 
    AND COALESCE(os.total_net_profit, 0) >= 1000
ORDER BY 
    t.customer_tenure_days DESC
FETCH FIRST 100 ROWS ONLY;
