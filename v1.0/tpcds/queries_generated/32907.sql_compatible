
WITH RECURSIVE SalesCTE AS (
    SELECT 
        ws_item_sk,
        ws_quantity,
        ws_sales_price,
        ws_net_profit,
        ws_order_number,
        1 AS level
    FROM web_sales
    WHERE ws_sold_date_sk = (SELECT MAX(d_date_sk) FROM date_dim)
    
    UNION ALL
    
    SELECT 
        s.ws_item_sk,
        s.ws_quantity + c.ws_quantity,
        s.ws_sales_price,
        s.ws_net_profit + c.ws_net_profit,
        s.ws_order_number,
        c.level + 1
    FROM web_sales s
    JOIN SalesCTE c ON s.ws_item_sk = c.ws_item_sk
    WHERE c.level < 5
),
SalesSummary AS (
    SELECT 
        ws_item_sk,
        SUM(ws_quantity) AS total_quantity,
        SUM(ws_net_profit) AS total_net_profit,
        COUNT(ws_order_number) AS order_count
    FROM web_sales
    WHERE ws_sold_date_sk IN (
        SELECT d_date_sk 
        FROM date_dim 
        WHERE d_year = 2023
    )
    GROUP BY ws_item_sk
)
SELECT 
    c.c_customer_id,
    ca.ca_city,
    SUM(ss.total_quantity) AS total_sales_quantity,
    SUM(ss.total_net_profit) AS total_net_profit,
    COUNT(DISTINCT ss.ws_order_number) AS distinct_orders
FROM customer c
JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
LEFT JOIN SalesSummary ss ON ss.ws_item_sk IN (
    SELECT ws_item_sk 
    FROM web_sales 
    WHERE ws_bill_customer_sk = c.c_customer_sk
)
WHERE c.c_birth_year BETWEEN 1980 AND 2000
    AND (c.c_preferred_cust_flag = 'Y' OR ca.ca_city IS NULL)
GROUP BY c.c_customer_id, ca.ca_city
HAVING SUM(ss.total_net_profit) > 10000
ORDER BY total_net_profit DESC
FETCH FIRST 50 ROWS ONLY;
