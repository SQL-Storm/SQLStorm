
WITH customer_info AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_credit_rating,
        hd.hd_income_band_sk,
        hd.hd_buy_potential,
        ROW_NUMBER() OVER (PARTITION BY c.c_customer_sk ORDER BY c.c_birth_year DESC) AS rn
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN household_demographics hd ON c.c_current_hdemo_sk = hd.hd_demo_sk
),
sales_data AS (
    SELECT 
        ws.ws_sold_date_sk,
        ws.ws_item_sk,
        ws.ws_quantity,
        ws.ws_net_paid,
        ws.ws_net_profit,
        sd.d_year
    FROM web_sales ws
    JOIN date_dim sd ON ws.ws_sold_date_sk = sd.d_date_sk
    WHERE sd.d_year = (SELECT MAX(d_year) FROM date_dim)
),
inventory_levels AS (
    SELECT 
        inv.inv_item_sk,
        SUM(inv.inv_quantity_on_hand) AS total_inventory
    FROM inventory inv
    GROUP BY inv.inv_item_sk
),
customer_sales AS (
    SELECT 
        ci.c_customer_sk,
        ci.c_first_name,
        ci.c_last_name,
        COALESCE(SUM(sd.ws_net_paid), 0) AS total_spent,
        COUNT(sd.ws_item_sk) AS total_orders
    FROM customer_info ci
    LEFT JOIN sales_data sd ON ci.c_customer_sk = sd.ws_bill_customer_sk
    GROUP BY ci.c_customer_sk, ci.c_first_name, ci.c_last_name
),
ranked_customers AS (
    SELECT 
        cs.c_customer_sk,
        cs.c_first_name,
        cs.c_last_name,
        cs.total_spent,
        cs.total_orders,
        RANK() OVER (ORDER BY cs.total_spent DESC) AS rank
    FROM customer_sales cs
)
SELECT 
    rc.c_customer_sk,
    rc.c_first_name,
    rc.c_last_name,
    rc.total_spent,
    rc.total_orders,
    CASE
        WHEN rc.rank <= 10 THEN 'Top 10 Customers'
        WHEN rc.total_spent = 0 THEN 'No Sales'
        ELSE 'Regular Customer'
    END AS customer_status,
    il.total_inventory
FROM ranked_customers rc
LEFT JOIN inventory_levels il ON rc.total_orders > 0
WHERE rc.rank <= 100 OR il.total_inventory IS NOT NULL
ORDER BY rc.rank;
