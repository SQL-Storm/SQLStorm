
WITH CustomerSales AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_ext_sales_price) AS total_sales,
        COUNT(ws.ws_order_number) AS order_count,
        cd.cd_gender,
        cd.cd_marital_status,
        dh.d_year,
        dh.d_month_seq
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        date_dim dh ON ws.ws_sold_date_sk = dh.d_date_sk
    WHERE 
        dh.d_year = 2022
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status, dh.d_year, dh.d_month_seq
),
TopCustomers AS (
    SELECT 
        c.c_first_name, 
        c.c_last_name, 
        c.total_sales, 
        RANK() OVER (PARTITION BY c.d_month_seq ORDER BY c.total_sales DESC) AS sales_rank
    FROM 
        CustomerSales c
)
SELECT 
    tc.c_first_name, 
    tc.c_last_name, 
    tc.total_sales, 
    tc.sales_rank, 
    CASE 
        WHEN tc.sales_rank <= 10 THEN 'Top 10'
        ELSE 'Others'
    END AS customer_category,
    COUNT(DISTINCT ws.ws_order_number) AS unique_orders
FROM 
    TopCustomers tc
JOIN 
    web_sales ws ON ws.ws_bill_customer_sk = tc.c_customer_sk
GROUP BY 
    tc.c_first_name, 
    tc.c_last_name, 
    tc.total_sales, 
    tc.sales_rank
ORDER BY 
    tc.total_sales DESC
FETCH FIRST 100 ROWS ONLY;
