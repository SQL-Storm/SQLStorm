
WITH ItemSales AS (
    SELECT 
        i.i_item_id,
        i.i_item_desc,
        i.i_current_price,
        SUM(ws.ws_quantity) AS total_quantity_sold,
        SUM(ws.ws_net_profit) AS total_net_profit
    FROM item i
    LEFT JOIN web_sales ws ON i.i_item_sk = ws.ws_item_sk
    GROUP BY i.i_item_id, i.i_item_desc, i.i_current_price
),
CustomerDemographics AS (
    SELECT 
        cd.cd_demo_sk,
        cd.cd_gender,
        CASE 
            WHEN cd.cd_marital_status = 'M' THEN 'Married'
            WHEN cd.cd_marital_status = 'S' THEN 'Single'
            ELSE 'Other'
        END AS marital_status,
        cd.cd_purchase_estimate,
        COALESCE(hd.hd_income_band_sk, -1) AS income_band
    FROM customer_demographics cd
    LEFT JOIN household_demographics hd ON cd.cd_demo_sk = hd.hd_demo_sk
),
SalesAnalytics AS (
    SELECT 
        cs.cs_item_sk,
        cs.cs_order_number,
        cs.cs_sold_date_sk,
        SUM(cs.cs_quantity) AS total_quantity_sold,
        AVG(cs.cs_sales_price) AS avg_sales_price,
        SUM(cs.cs_net_profit) AS total_net_profit
    FROM catalog_sales cs
    GROUP BY cs.cs_item_sk, cs.cs_order_number, cs.cs_sold_date_sk
),
SalesSummary AS (
    SELECT
        i.i_item_id,
        is.total_quantity_sold,
        is.total_net_profit,
        COUNT(DISTINCT ca.ca_address_sk) AS customer_count,
        SUM(CASE WHEN cd.cd_gender = 'F' THEN 1 ELSE 0 END) AS female_customers,
        SUM(CASE WHEN cd.cd_gender = 'M' THEN 1 ELSE 0 END) AS male_customers
    FROM ItemSales is
    LEFT JOIN web_sales ws ON is.i_item_id = ws.ws_item_sk
    LEFT JOIN customer c ON ws.ws_bill_customer_sk = c.c_customer_sk
    LEFT JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    GROUP BY i.i_item_id, is.total_quantity_sold, is.total_net_profit
),
FinalReport AS (
    SELECT 
        ss.i_item_id,
        ss.total_quantity_sold,
        ss.total_net_profit,
        cs.total_quantity_sold AS catalog_total_quantity,
        cs.avg_sales_price AS catalog_avg_price,
        cs.total_net_profit AS catalog_total_profit,
        cd.marital_status,
        cd.income_band
    FROM SalesSummary ss
    JOIN SalesAnalytics cs ON ss.i_item_id = cs.cs_item_sk
    JOIN CustomerDemographics cd ON cd.cd_demo_sk = ss.customer_count
)

SELECT
    f.i_item_id,
    f.total_quantity_sold,
    f.total_net_profit,
    f.catalog_total_quantity,
    f.catalog_avg_price,
    f.catalog_total_profit,
    f.marital_status,
    f.income_band
FROM FinalReport f
WHERE f.total_net_profit > 10000
ORDER BY f.total_quantity_sold DESC
FETCH FIRST 100 ROWS ONLY;
