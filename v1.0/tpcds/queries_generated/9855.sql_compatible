
WITH CustomerPurchaseStats AS (
    SELECT 
        c.c_customer_id, 
        c.c_first_name, 
        c.c_last_name, 
        SUM(ws.ws_net_paid) AS total_spent, 
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        cd.cd_gender,
        cd.cd_marital_status,
        DATEADD(YEAR, 1, d.d_date) AS anniversary_date
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        d.d_year = 2023
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status, d.d_date
), 
CustomerShippingStats AS (
    SELECT 
        c.c_customer_id, 
        COUNT(DISTINCT wr.wr_order_number) AS total_returns,
        SUM(wr.wr_return_amt) AS total_returned
    FROM 
        customer c
    JOIN 
        web_returns wr ON c.c_customer_sk = wr.wr_returning_customer_sk
    GROUP BY 
        c.c_customer_id
)
SELECT 
    cps.c_customer_id, 
    cps.c_first_name, 
    cps.c_last_name, 
    cps.total_spent, 
    cps.total_orders, 
    css.total_returns, 
    css.total_returned, 
    cps.cd_gender, 
    cps.cd_marital_status, 
    cps.anniversary_date
FROM 
    CustomerPurchaseStats cps
LEFT JOIN 
    CustomerShippingStats css ON cps.c_customer_id = css.c_customer_id
ORDER BY 
    cps.total_spent DESC
FETCH FIRST 10 ROWS ONLY;
