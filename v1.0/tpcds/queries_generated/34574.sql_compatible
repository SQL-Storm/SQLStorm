
WITH RECURSIVE sales_summary AS (
    SELECT 
        ws_ship_customer_sk,
        COUNT(ws_order_number) AS total_orders,
        SUM(ws_ext_sales_price) AS total_sales,
        ROW_NUMBER() OVER (PARTITION BY ws_ship_customer_sk ORDER BY SUM(ws_ext_sales_price) DESC) AS order_rank
    FROM 
        web_sales
    GROUP BY 
        ws_ship_customer_sk
), customer_data AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        COALESCE(cd.cd_dep_count, 0) AS dependents,
        COALESCE(cd.cd_purchase_estimate, 0) AS purchase_estimate,
        a.ca_city,
        SUM(CASE WHEN d.d_year = 2023 THEN ws.ws_ext_sales_price ELSE 0 END) AS sales_2023,
        COUNT(ws.ws_order_number) AS order_count
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address a ON c.c_current_addr_sk = a.ca_address_sk
    LEFT JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    LEFT JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
    WHERE 
        cd.cd_gender = 'F' 
        AND a.ca_city IS NOT NULL 
        AND (cd.cd_purchase_estimate > 500 OR cd.cd_marital_status = 'M')
    GROUP BY 
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status, a.ca_city
), ranked_customers AS (
    SELECT 
        c_customer_sk,
        c_first_name,
        c_last_name,
        cd_gender AS gender,
        dependents,
        ca_city AS city,
        sales_2023,
        order_count,
        ROW_NUMBER() OVER (ORDER BY sales_2023 DESC) AS customer_rank
    FROM 
        customer_data
)
SELECT 
    rc.c_first_name,
    rc.c_last_name,
    rc.gender,
    rc.dependents,
    rc.city,
    ss.total_orders,
    ss.total_sales,
    CASE 
        WHEN ss.total_sales IS NULL THEN 'No Sales'
        ELSE CONCAT('$', FORMAT(ss.total_sales, 2))
    END AS formatted_sales
FROM 
    ranked_customers rc
LEFT JOIN 
    sales_summary ss ON rc.c_customer_sk = ss.ws_ship_customer_sk
WHERE 
    rc.customer_rank <= 10
ORDER BY 
    ss.total_sales DESC;
