
WITH SalesData AS (
    SELECT 
        ws.web_site_id,
        ws.ws_ship_date_sk,
        SUM(ws.ws_quantity) AS total_quantity,
        SUM(ws.ws_net_paid_inc_tax) AS total_revenue,
        DENSE_RANK() OVER (PARTITION BY ws.web_site_id ORDER BY SUM(ws.ws_net_paid_inc_tax) DESC) AS site_rank
    FROM 
        web_sales AS ws
    JOIN 
        date_dim AS dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2023
    GROUP BY 
        ws.web_site_id, ws.ws_ship_date_sk
),
PreviousYearSales AS (
    SELECT 
        ws.web_site_id,
        SUM(ws.ws_quantity) AS total_quantity_last_year
    FROM 
        web_sales AS ws
    JOIN 
        date_dim AS dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2022
    GROUP BY 
        ws.web_site_id
)
SELECT 
    s.web_site_id,
    s.total_quantity,
    s.total_revenue,
    COALESCE(p.total_quantity_last_year, 0) AS last_year_quantity,
    CASE 
        WHEN COALESCE(p.total_quantity_last_year, 0) = 0 THEN NULL
        ELSE ROUND((s.total_quantity * 1.0 / NULLIF(p.total_quantity_last_year, 0)) * 100, 2)
    END AS growth_percentage
FROM 
    SalesData AS s
LEFT JOIN 
    PreviousYearSales AS p ON s.web_site_id = p.web_site_id
WHERE 
    s.site_rank = 1
ORDER BY 
    s.total_revenue DESC
LIMIT 10;
