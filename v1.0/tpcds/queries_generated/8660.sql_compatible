
WITH CustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_purchase_estimate,
        hd.hd_income_band_sk,
        ib.ib_lower_bound,
        ib.ib_upper_bound
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        household_demographics hd ON c.c_current_hdemo_sk = hd.hd_demo_sk
    JOIN 
        income_band ib ON hd.hd_income_band_sk = ib.ib_income_band_sk
),
SalesInfo AS (
    SELECT 
        ws.ws_sold_date_sk,
        ws.ws_item_sk,
        ws.ws_quantity,
        ws.ws_sales_price,
        ws.ws_net_paid,
        DATE(d.d_date) AS SaleDate,
        ws.ws_customer_sk
    FROM 
        web_sales ws
    JOIN 
        date_dim d ON ws.ws_sold_date_sk = d.d_date_sk
),
TotalSales AS (
    SELECT 
        ci.c_customer_sk,
        SUM(si.ws_quantity) AS TotalQuantity,
        SUM(si.ws_net_paid) AS TotalNetPaid
    FROM 
        CustomerInfo ci
    JOIN 
        SalesInfo si ON ci.c_customer_sk = si.ws_customer_sk
    GROUP BY 
        ci.c_customer_sk
)
SELECT 
    ci.c_first_name,
    ci.c_last_name,
    ci.cd_gender,
    ci.cd_marital_status,
    ci.ib_lower_bound,
    ci.ib_upper_bound,
    ts.TotalQuantity,
    ts.TotalNetPaid
FROM 
    CustomerInfo ci
JOIN 
    TotalSales ts ON ci.c_customer_sk = ts.c_customer_sk
WHERE 
    ts.TotalNetPaid > 1000
ORDER BY 
    ts.TotalNetPaid DESC
LIMIT 100;
