
WITH SalesSummary AS (
    SELECT 
        c.c_customer_id,
        SUM(ws.ws_net_paid_inc_tax) AS total_sales,
        COUNT(DISTINCT ss.ss_ticket_number) AS total_transactions,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_gender ORDER BY SUM(ws.ws_net_paid_inc_tax) DESC) AS gender_rank
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
    WHERE 
        ca.ca_state IN ('CA', 'TX', 'NY') 
        AND ws.ws_sold_date_sk >= (SELECT MAX(d.d_date_sk) - 90 FROM date_dim d WHERE d.d_current_year = 1)
    GROUP BY 
        c.c_customer_id, cd.cd_gender
), 
TopCustomers AS (
    SELECT 
        s.c_customer_id,
        s.total_sales,
        s.total_transactions,
        CASE 
            WHEN s.total_sales > 1000 THEN 'High Value'
            WHEN s.total_sales BETWEEN 500 AND 1000 THEN 'Medium Value'
            ELSE 'Low Value' 
        END AS customer_value_segment
    FROM 
        SalesSummary s
    WHERE 
        s.gender_rank = 1
)

SELECT 
    tc.c_customer_id,
    tc.total_sales,
    tc.total_transactions,
    tc.customer_value_segment,
    (SELECT COUNT(DISTINCT sr.sr_returning_customer_sk) 
     FROM store_returns sr 
     WHERE sr.sr_customer_sk = tc.c_customer_id) AS total_returns,
    (SELECT COUNT(DISTINCT wr.wr_returning_customer_sk) 
     FROM web_returns wr 
     WHERE wr.wr_returning_customer_sk = tc.c_customer_id) AS total_web_returns
FROM 
    TopCustomers tc
JOIN 
    customer c ON tc.c_customer_id = c.c_customer_id
ORDER BY 
    tc.total_sales DESC
LIMIT 10;
