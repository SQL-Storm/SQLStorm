
WITH ranked_sales AS (
    SELECT
        ws.web_site_sk,
        SUM(ws.net_profit) AS total_profit,
        ROW_NUMBER() OVER (PARTITION BY wp.web_page_sk ORDER BY SUM(ws.net_profit) DESC) AS rn
    FROM
        web_sales ws
    JOIN
        web_page wp ON ws.web_page_sk = wp.wp_web_page_sk
    WHERE
        ws.net_profit IS NOT NULL
    GROUP BY
        ws.web_site_sk, wp.web_page_sk
),
high_profit_customers AS (
    SELECT
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        COALESCE(cd.cd_gender, 'U') AS gender,
        COALESCE(SUM(ws.net_paid_inc_tax), 0) AS total_spent
    FROM
        customer c
    LEFT JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE
        c.c_first_shipto_date_sk >= (SELECT MAX(d.d_date_sk) - 365 FROM date_dim d)
    GROUP BY
        c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender
    HAVING
        total_spent > (SELECT AVG(total_spent) FROM (
            SELECT SUM(ws.net_paid_inc_tax) AS total_spent
            FROM web_sales ws
            GROUP BY ws.ws_bill_customer_sk
        ) AS avg_spent)
)
SELECT
    hpc.c_first_name,
    hpc.c_last_name,
    hpc.gender,
    hpc.total_spent,
    r.total_profit AS web_site_profit
FROM
    high_profit_customers hpc
LEFT JOIN
    ranked_sales r ON hpc.c_customer_sk = r.web_site_sk
WHERE
    r.rn = 1 OR r.rn IS NULL
ORDER BY
    hpc.total_spent DESC,
    COALESCE(r.total_profit, 0) DESC;
