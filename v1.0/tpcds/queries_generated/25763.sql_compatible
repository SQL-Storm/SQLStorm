
WITH AddressParts AS (
    SELECT 
        ca_address_sk,
        TRIM(ca_street_number) || ' ' || TRIM(ca_street_name) || ' ' || TRIM(ca_street_type) || 
        CASE WHEN ca_suite_number IS NOT NULL THEN ' Suite ' || TRIM(ca_suite_number) ELSE '' END AS full_address,
        ca_city,
        ca_state
    FROM 
        customer_address
),
CustomerDetails AS (
    SELECT
        c.c_customer_sk,
        TRIM(c.c_salutation) || ' ' || TRIM(c.c_first_name) || ' ' || TRIM(c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ad.full_address,
        ad.ca_city,
        ad.ca_state
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        AddressParts ad ON c.c_current_addr_sk = ad.ca_address_sk
),
Stats AS (
    SELECT
        cd.cd_gender,
        COUNT(*) AS customer_count,
        STRING_AGG(cd.cd_marital_status || ' (' || COUNT(DISTINCT c.c_customer_sk) || ')', ', ') AS marital_status_summary
    FROM 
        CustomerDetails cd
    GROUP BY 
        cd.cd_gender
)
SELECT 
    s.cd_gender,
    s.customer_count,
    s.marital_status_summary
FROM 
    Stats s
ORDER BY 
    s.customer_count DESC;
