
WITH customer_info AS (
    SELECT
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_credit_rating,
        cd.cd_purchase_estimate,
        ROW_NUMBER() OVER (PARTITION BY cd.cd_gender ORDER BY cd.cd_purchase_estimate DESC) AS gender_rank
    FROM
        customer c
    JOIN
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
),
top_customers AS (
    SELECT
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        ci.cd_gender,
        ci.cd_marital_status,
        ci.cd_purchase_estimate,
        (SELECT COUNT(*) FROM web_sales ws WHERE ws.ws_bill_customer_sk = c.c_customer_sk) AS order_count
    FROM
        customer c
    JOIN
        customer_info ci ON c.c_customer_sk = ci.c_customer_sk
    WHERE
        ci.gender_rank <= 5
),
sales_summary AS (
    SELECT
        COALESCE(ws.ws_sold_date_sk, cs.cs_sold_date_sk, ss.ss_sold_date_sk) AS sold_date_sk,
        COALESCE(ws.ws_quantity, cs.cs_quantity, ss.ss_quantity) AS total_quantity,
        COALESCE(ws.ws_net_paid, cs.cs_net_paid, ss.ss_net_paid) AS total_net_paid
    FROM
        web_sales ws
    FULL OUTER JOIN
        catalog_sales cs ON ws.ws_order_number = cs.cs_order_number
    FULL OUTER JOIN
        store_sales ss ON ws.ws_order_number = ss.ss_ticket_number
),
final_summary AS (
    SELECT
        tc.cd_gender,
        SUM(ss.total_quantity) AS total_sales_quantity,
        SUM(ss.total_net_paid) AS total_sales_net_paid
    FROM
        top_customers tc
    JOIN
        sales_summary ss ON tc.c_customer_sk = ss.sold_date_sk
    GROUP BY
        tc.c_customer_sk, tc.cd_gender
)
SELECT
    f.cd_gender,
    f.total_sales_quantity,
    f.total_sales_net_paid,
    RANK() OVER (ORDER BY f.total_sales_net_paid DESC) AS sales_rank
FROM
    final_summary f
WHERE
    f.total_sales_quantity > 0
ORDER BY
    f.cd_gender, f.sales_rank;
