
WITH AddressDetails AS (
    SELECT 
        CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type) AS full_address,
        ca_city,
        ca_state,
        ca_country,
        ca_zip,
        ca_address_sk
    FROM 
        customer_address
    WHERE 
        ca_state IN ('CA', 'TX') 
        AND ca_city LIKE '%land%'
),
CustomerInfo AS (
    SELECT 
        c.c_customer_id,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS customer_name,
        dd.d_date AS last_purchase_date,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status
    FROM 
        customer c
        JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
        JOIN date_dim dd ON c.c_first_sales_date_sk = dd.d_date_sk
),
SalesData AS (
    SELECT 
        SUM(ws.ws_sales_price) AS total_sales,
        ws.ws_web_site_sk,
        ws.ws_ship_mode_sk,
        ad.full_address
    FROM 
        web_sales ws
        JOIN AddressDetails ad ON ws.ws_bill_addr_sk = ad.ca_address_sk
    WHERE 
        ws.ws_sold_date_sk >= (SELECT MIN(dd.d_date_sk) FROM date_dim dd WHERE dd.d_year = 2023)
    GROUP BY 
        ws.ws_web_site_sk, ws.ws_ship_mode_sk, ad.full_address
)
SELECT 
    ci.customer_name,
    ci.cd_gender,
    ci.cd_marital_status,
    sd.total_sales,
    ad.full_address,
    ad.ca_city,
    ad.ca_state,
    ad.ca_zip
FROM 
    CustomerInfo ci
JOIN 
    SalesData sd ON ci.c_customer_id IN (SELECT DISTINCT ws_bill_customer_sk FROM web_sales WHERE ws_sold_date_sk >= (SELECT MIN(d_date_sk) FROM date_dim WHERE d_year = 2023))
JOIN 
    AddressDetails ad ON ad.full_address = (
        SELECT CONCAT(ca_street_number, ' ', ca_street_name, ' ', ca_street_type)
        FROM customer_address
        WHERE ca_address_sk = ci.c_current_addr_sk
    )
ORDER BY 
    sd.total_sales DESC;
