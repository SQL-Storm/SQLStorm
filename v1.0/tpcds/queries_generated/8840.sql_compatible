
WITH CustomerSales AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        SUM(ws.ws_net_profit) AS total_profit,
        COUNT(DISTINCT ws.ws_order_number) AS order_count,
        AVG(ws.ws_net_paid) AS avg_payment
    FROM 
        customer c
    JOIN 
        web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE 
        c.c_birth_year >= 1980
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name
),
TopCustomers AS (
    SELECT 
        c.*,
        RANK() OVER (ORDER BY total_profit DESC) AS sales_rank
    FROM 
        CustomerSales c
),
RecentReturns AS (
    SELECT 
        wr.wr_returning_customer_sk,
        COUNT(wr.wr_return_order_number) AS total_returns,
        SUM(wr.wr_return_amt) AS total_return_amt
    FROM 
        web_returns wr
    WHERE 
        wr.wr_returned_date_sk >= (SELECT MAX(d.d_date_sk) FROM date_dim d WHERE d.d_year = 2023)
    GROUP BY 
        wr.wr_returning_customer_sk
)

SELECT 
    tc.c_customer_id,
    tc.c_first_name,
    tc.c_last_name,
    tc.total_profit,
    tc.order_count,
    tc.avg_payment,
    COALESCE(rr.total_returns, 0) AS recent_return_count,
    COALESCE(rr.total_return_amt, 0) AS recent_return_amount
FROM 
    TopCustomers tc
LEFT JOIN 
    RecentReturns rr ON tc.c_customer_id = rr.wr_returning_customer_sk
WHERE 
    tc.sales_rank <= 10;
