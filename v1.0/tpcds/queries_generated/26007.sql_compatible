
WITH ProcessedCustomerInfo AS (
    SELECT 
        c.c_customer_sk,
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender,
        cd.cd_marital_status,
        cd.cd_education_status,
        ca.ca_city AS city,
        ca.ca_state AS state,
        CASE 
            WHEN ca.ca_zip IS NOT NULL THEN CONCAT(ca.ca_zip, ', ', ca.ca_country) 
            ELSE ca.ca_country 
        END AS location,
        REPLACE(cd.cd_credit_rating, ' ', '') AS credit_rating,
        LPAD(cd.cd_purchase_estimate, 10, '0') AS purchase_estimate_formatted
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
AggregatedInfo AS (
    SELECT 
        ci.city,
        ci.state,
        COUNT(ci.c_customer_sk) AS total_customers,
        COUNT(DISTINCT ci.credit_rating) AS distinct_credit_ratings,
        AVG(CAST(REPLACE(ci.purchase_estimate_formatted, ',', '') AS INT)) AS avg_purchase_estimate
    FROM 
        ProcessedCustomerInfo ci
    GROUP BY 
        ci.city, ci.state
)
SELECT 
    city,
    state,
    total_customers,
    distinct_credit_ratings,
    ROUND(avg_purchase_estimate, 2) AS avg_purchase_estimate
FROM 
    AggregatedInfo
ORDER BY 
    total_customers DESC
LIMIT 10;
