
WITH RECURSIVE sales_hierarchy AS (
    SELECT
        c.c_customer_sk,
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        COALESCE(SUM(ws.ws_net_profit), 0) AS total_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders
    FROM
        customer c
    LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_ship_customer_sk
    GROUP BY
        c.c_customer_sk, c.c_customer_id, c.c_first_name, c.c_last_name
),
high_value_customers AS (
    SELECT
        customer_id,
        RANK() OVER (ORDER BY total_profit DESC) AS profit_rank
    FROM
        sales_hierarchy
    WHERE
        total_orders > 5
)
SELECT
    hvc.customer_id,
    sh.c_first_name,
    sh.c_last_name,
    sh.total_profit,
    sh.total_orders,
    (CASE 
        WHEN hvc.profit_rank <= 10 THEN 'Top Customer'
        ELSE 'Regular Customer'
    END) AS customer_category
FROM
    sales_hierarchy sh
JOIN
    high_value_customers hvc ON sh.c_customer_id = hvc.customer_id
WHERE
    sh.total_profit > (SELECT AVG(total_profit) FROM sales_hierarchy)
ORDER BY
    sh.total_profit DESC
FETCH FIRST 50 ROWS ONLY;
