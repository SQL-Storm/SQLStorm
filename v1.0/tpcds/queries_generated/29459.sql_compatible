
WITH RankedCustomers AS (
    SELECT 
        c.c_customer_sk, 
        CONCAT(c.c_first_name, ' ', c.c_last_name) AS full_name,
        cd.cd_gender, 
        cd.cd_marital_status,
        CONCAT(UPPER(c.ca_street_number), ' ', INITCAP(c.ca_street_name), ' ', INITCAP(c.ca_street_type), 
               CASE WHEN c.ca_suite_number IS NOT NULL THEN CONCAT(', Suite ', c.ca_suite_number) ELSE '' END) AS address,
        c.c_email_address
    FROM 
        customer c
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    JOIN 
        customer_address ca ON c.c_current_addr_sk = ca.ca_address_sk
),
CustomerStatistics AS (
    SELECT 
        cd_gender AS gender, 
        cd_marital_status AS marital_status, 
        COUNT(*) AS customer_count,
        STRING_AGG(full_name, ', ') AS customer_names
    FROM 
        RankedCustomers
    GROUP BY 
        cd_gender, cd_marital_status
)
SELECT 
    cs.gender, 
    cs.marital_status, 
    cs.customer_count, 
    cs.customer_names,
    CASE 
        WHEN cs.customer_count > 100 THEN 'High Activity'
        WHEN cs.customer_count BETWEEN 50 AND 100 THEN 'Moderate Activity'
        ELSE 'Low Activity'
    END AS activity_level
FROM 
    CustomerStatistics cs
ORDER BY 
    cs.customer_count DESC;
