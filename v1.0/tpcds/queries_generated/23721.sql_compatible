
WITH CustomerStats AS (
    SELECT
        c.c_customer_sk,
        c.c_first_name,
        c.c_last_name,
        cd.cd_gender,
        cd.cd_marital_status,
        SUM(ws.ws_net_profit) AS total_net_profit,
        COUNT(DISTINCT ws.ws_order_number) AS total_orders,
        DENSE_RANK() OVER (PARTITION BY cd.cd_gender ORDER BY SUM(ws.ws_net_profit) DESC) AS income_rank
    FROM customer c
    JOIN customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    LEFT JOIN web_sales ws ON c.c_customer_sk = ws.ws_bill_customer_sk
    WHERE cd.cd_marital_status <> 'D'
    GROUP BY c.c_customer_sk, c.c_first_name, c.c_last_name, cd.cd_gender, cd.cd_marital_status
),
TopCustomers AS (
    SELECT
        cs.c_customer_sk,
        cs.c_first_name,
        cs.c_last_name,
        cs.total_net_profit,
        cs.total_orders
    FROM CustomerStats cs
    WHERE cs.income_rank <= 10
),
InventoryStatus AS (
    SELECT
        i.i_item_sk,
        SUM(i.inv_quantity_on_hand) AS total_quantity
    FROM inventory i
    WHERE i.inv_quantity_on_hand IS NOT NULL
    GROUP BY i.i_item_sk
),
ReturnsData AS (
    SELECT
        sr_item_sk,
        SUM(sr_return_quantity) AS total_return_qty,
        SUM(sr_return_amt_inc_tax) AS total_return_amt
    FROM store_returns
    GROUP BY sr_item_sk
)
SELECT 
    tc.c_first_name,
    tc.c_last_name,
    COALESCE(ts.total_quantity, 0) AS available_quantity,
    COALESCE(rd.total_return_qty, 0) AS total_returned_qty,
    COALESCE(rd.total_return_amt, 0.00) AS total_returned_amt,
    CASE 
        WHEN COALESCE(ts.total_quantity, 0) = 0 THEN 'Not Available'
        ELSE 'Available'
    END AS inventory_status
FROM TopCustomers tc
FULL OUTER JOIN InventoryStatus ts ON tc.c_customer_sk = ts.i_item_sk
FULL OUTER JOIN ReturnsData rd ON tc.c_customer_sk = rd.sr_item_sk
WHERE 
    (tc.total_net_profit > 1000 OR COALESCE(rd.total_return_qty, 0) < 5)
    AND (tc.total_orders BETWEEN 1 AND 50)
ORDER BY 
    tc.total_net_profit DESC NULLS LAST, 
    tc.c_last_name ASC 
OFFSET 5 ROWS FETCH NEXT 10 ROWS ONLY;
