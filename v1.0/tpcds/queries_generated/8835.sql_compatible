
WITH RankedSales AS (
    SELECT 
        ws.ws_item_sk,
        ws.ws_order_number,
        ws.ws_sold_date_sk,
        ws.ws_sales_price,
        ws.ws_quantity,
        ws.ws_ext_sales_price,
        ROW_NUMBER() OVER (PARTITION BY ws.ws_item_sk ORDER BY ws.ws_ext_sales_price DESC) AS sales_rank
    FROM 
        web_sales ws
    JOIN 
        date_dim dd ON ws.ws_sold_date_sk = dd.d_date_sk
    WHERE 
        dd.d_year = 2022
),
TopSellingItems AS (
    SELECT 
        item.i_item_id,
        item.i_item_desc,
        SUM(RS.ws_quantity) AS total_quantity_sold,
        SUM(RS.ws_ext_sales_price) AS total_sales_amount
    FROM 
        RankedSales RS
    JOIN 
        item ON RS.ws_item_sk = item.i_item_sk
    WHERE 
        RS.sales_rank <= 10
    GROUP BY 
        item.i_item_id, item.i_item_desc
)
SELECT 
    TSI.i_item_id,
    TSI.i_item_desc,
    TSI.total_quantity_sold,
    TSI.total_sales_amount,
    CA.ca_city,
    CA.ca_state,
    CA.ca_country
FROM 
    TopSellingItems TSI
JOIN 
    customer C ON C.c_customer_sk = (
        SELECT ws.ws_bill_customer_sk 
        FROM web_sales ws 
        WHERE ws.ws_item_sk = TSI.i_item_id 
        LIMIT 1
    )
JOIN 
    customer_address CA ON C.c_current_addr_sk = CA.ca_address_sk
ORDER BY 
    TSI.total_sales_amount DESC
FETCH FIRST 50 ROWS ONLY;
