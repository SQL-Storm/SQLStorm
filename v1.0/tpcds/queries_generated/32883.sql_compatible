
WITH RECURSIVE Sales_CTE AS (
    SELECT 
        ws_sold_date_sk,
        ws_item_sk,
        ws_order_number,
        ws_quantity,
        ws_sales_price,
        ws_net_profit,
        ROW_NUMBER() OVER (PARTITION BY ws_item_sk ORDER BY ws_order_number) AS rn
    FROM web_sales
    WHERE ws_sold_date_sk BETWEEN 2459492 AND 2459496
),
Customer_Info AS (
    SELECT 
        c.c_customer_id,
        c.c_first_name,
        c.c_last_name,
        d.d_date,
        cd.cd_gender,
        cd.cd_marital_status,
        SUM(s.ws_net_profit) AS total_profit,
        COUNT(DISTINCT s.ws_order_number) AS order_count
    FROM 
        customer c
    JOIN 
        web_sales s ON c.c_customer_sk = s.ws_ship_customer_sk
    JOIN 
        date_dim d ON s.ws_sold_date_sk = d.d_date_sk
    JOIN 
        customer_demographics cd ON c.c_current_cdemo_sk = cd.cd_demo_sk
    GROUP BY 
        c.c_customer_id, c.c_first_name, c.c_last_name, d.d_date, cd.cd_gender, cd.cd_marital_status
),
Top_Customers AS (
    SELECT 
        *,
        RANK() OVER (PARTITION BY cd_gender ORDER BY total_profit DESC) AS gender_rank
    FROM 
        Customer_Info
    WHERE 
        total_profit > 1000
)
SELECT 
    t.c_first_name,
    t.c_last_name,
    t.total_profit,
    t.gender_rank,
    STRING_AGG(DISTINCT CONCAT(CAST(s.ws_order_number AS CHAR), ' - Quantity: ', CAST(s.ws_quantity AS CHAR)), '; ') AS order_details
FROM 
    Top_Customers t
LEFT JOIN 
    web_sales s ON t.c_customer_id = s.ws_bill_customer_sk
WHERE 
    t.gender_rank <= 10
GROUP BY 
    t.c_first_name, t.c_last_name, t.total_profit, t.gender_rank
ORDER BY 
    t.total_profit DESC;
